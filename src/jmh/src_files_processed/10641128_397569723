import java.io.*;
public class magazzino
{
    public String titolo,autore;
    public int prezzo;
    public int copie;
    public int n_libri;
    public int c=0;
    
    public static libro l1[];
    libro elenco[];
    magazzino num_libri;
    
    public  magazzino (num_libri)
        {
        }
    
    public void main ()
    {
        System.out.println("\f"); 
        
        InputStreamReader reader = new InputStreamReader (System.in);
        BufferedReader tastiera = new BufferedReader (reader);
    
        
        try
        {
            System.out.println("Inserisci il numero di libri : ");
            n_libri = Integer.valueOf(tastiera.readLine()).intValue();
        }
        catch (Exception YY)
        {
            System.out.println("Errore!!");
            return;
        }
        
        
        elenco = new libro [n_libri];
        l1 = new libro [n_libri];
        
    for (c=0;c<n_libri;c++)
    {
        try
        {   
            System.out.println("LIBRO "+ c+1);
            
            System.out.println("Inserisci l'autore : ");
            elenco[c].autore = tastiera.readLine();
            
            System.out.println("Inserisci il titolo : ");
            elenco[c].titolo = tastiera.readLine();
            
            System.out.println("Inserisci il prezzo : ");
            elenco[c].prezzo = Integer.valueOf(tastiera.readLine()).intValue();
            
            System.out.println("Inserisci il numero di copie : ");
            elenco[c].copie = Integer.valueOf(tastiera.readLine()).intValue();
            
            System.out.println("\n");
            
        }
        
        catch (Exception xx)
        {
            System.out.println("Errore!!");
            return;
        }
    }
}
    
      
    
    public void carica_libri ()
    {
        for (c=0;c<n_libri;c++)
        {
            l1[c] = new libro(elenco[c].autore,elenco[c].titolo,elenco[c].prezzo,elenco[c].copie);
        }
        
        num_libri = new magazzino(n_libri);
        
    }
    
   /* public static void scarica_libri_l1 () 
    {
       l1.copie--;
    }*/
   
   }
