import java.awt.*;

/**
 * ##### ## ########### ############# ## ### ####### #######
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class NewDemo
{
    private Machine machine;

    /**
     * Constructor for objects of class Demo
     */
    public NewDemo()
    {
        machine = new Machine();
    }

    /**
     * Sample demo method - demonstrates what happens when an object rebounds off the left-hand wall
     */
    public void sampleNewDemo()
    {
        machine.resetMachine();
        
        PinballObject Bumper1 = new PinballObject(120, 150, 0, 0, Color.GRAY, 20, machine);
        PinballObject Bumper2 = new PinballObject(480, 150, 0, 0, Color.GRAY, 20, machine);
        PinballObject obj1 = new PinballObject(50, 200, -5, 3, Color.RED, 10, machine);
        PinballObject obj2 = new PinballObject(100, 300, 1, 2, Color.BLUE, 55, machine);
        PinballObject obj3 = new PinballObject(450, 125, -1, -1, Color.YELLOW, 40, machine);
        PinballObject obj4 = new PinballObject(100, 200, 2, -2, Color.MAGENTA, 25, machine);
        
        for(int i = 0; i <= 120; i++)
        {
            machine.pauseMachine();           
            Bumper1.move();
            Bumper2.move();
            obj1.move();
            obj2.move();
            obj3.move();
            obj4.move();
        }
        
    }
    public checkColision(PinballObject)
    {
        getColision(obj1)
        getColision(obj2)
        getColision(obj3)
        getColision(obj4)
    }
    public String getColision(PinballObject)
    {
        int x = PinballObject.GetXLocation();
        int y = PinballObject.GetYLocation();
        int xSpeed = PinballObject.GetXSpeed();
        int ySpeed = PinballObject.GetYSpeed();
        int radius = PinballObject.GetRadius();
        String colision = ""
        if( x <= 10+radius)
        {
            colision = "xw"
        }
        if(x >= 590-radius)
        {
            colision = "xw"
        }
        if(y <= 10-radius)
        {
            colision = "yw"
        }
        if(y >= 490+radius)
        {
            colision = "yw"
        }
        if (colision = "xw")
        {
            PinballObject.
        
    }
}