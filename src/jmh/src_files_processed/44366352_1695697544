import java.util.Scanner;
public class bubbleSort
{
    public static void main(String[] args)
    {
        final int SPOTS = 6;
        boolean sorted;
        boolean yn;
        int i;
        int spot;
        int temp;
        String entry = "";
        int a[] = {4, 2, 7, 6 , 1, 9};
        Scanner stdIn = new Scanner(System.in)
        for( spot=1;spot<SPOTS; spot++)
        {
            System.out.println(a[spot]);
        }
            while (yn == false)
            {
                 System.out.println("Do you want to sort thw numbers?");
                if(entry.equals("y"))
                {
                    System.out.println("OK");
                    for( i=1;i<SPOTS; i++)
                    {
                        sorted = true;
                        for(int j=0; j<SPOTS; j++)
                        {
                            if(a[j]>a[j+1])
                            {
                                temp = a[j];
                                a[j] = a[j+1];
                                a[j+1] = temp;
                                sorted = false;
                            }
                            else if (entry.equals("N"))
                {
                System.out.println("OK, LEAVE THIS... NOW ");
                
            }
         }
      }
   }
  }
 }
}
/** Write a program to display an array containing these numbers: 4, 2, 7, 6 , 1, 9 
and the lets the user choose to sort the array which it then displays: 1, 2,4, 6, 7, 9.
