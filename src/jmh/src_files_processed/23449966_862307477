
import java.util.Scanner;

public class StringManips
{
    public static void main (String[] args)
    {
        Scanner scan = new Scanner(System.in);
        String phrase = new String ("This is a String test.");
        int phraseLength;   
        int middleIndex;    
        String middle3;
        String firstHalf;   
        String secondHalf;  
        String switchedPhrase; 
        char test;
        String newPhrase = "";
        
        String state;
        String city; 
        
        System.out.println ("Please enter you state.");
        state = scan.nextLine();
        state = state.toUpperCase ();
        System.out.println ("Please enter you city.");
        city = scan.nextLine();
        city = city.toLowerCase ();
        
        System.out.println(state.concat(city.concat(state)));
        phraseLength = phrase.length();
        middleIndex = phraseLength / 2;
        
        newPhrase.replace(' ',*);
        firstHalf = newPhrase.substring(0,middleIndex);
        secondHalf = newPhrase.substring(middleIndex, phraseLength);
    
        switchedPhrase = secondHalf.concat(firstHalf);
        
        middle3 = newPhrase.substring(middleIndex-1,middleIndex+1);
    
        System.out.println();
        System.out.println ("Original phrase: " + phrase);
        System.out.println ("Length of the phrase: " + phraseLength + " characters");
        System.out.println ("Index of the middle: " + middleIndex);
        System.out.println ("Character at the middle index: " + phrase.charAt(middleIndex));
        System.out.println ("Switched phrase: " + switchedPhrase);
        System.out.println ("Middle 3: " + middle3);
        System.out.println();
    }
}