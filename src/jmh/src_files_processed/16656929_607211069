
public class Phone
{
    public double battery;
    
    public Phone()
    {
        battery = 1.0;
    }
    
    public void playGame(int hour)
    {
        battery = battery - hour * 0.2;
        if (battery < 0)
            battery = 0;
    }

    
    public void chargePhone(int hour)
    {
        battery = battery + hour * 0.5;
        if (battery > 1)
            battery = 1;
    }
    
    public void playMusic(int hour)
    {
        double musicBattery = hour * 0.1;
    	System.out.printf("%d-hour music playing consumes %.2f battery\n", hour, musicBattery);
    	p.battery = p.battery - musicBattery; 
    	if (p.battery < 0)
    	    p.battery = 0;
    }
    
    public int getBatery
    [
        return battery;
    }

}