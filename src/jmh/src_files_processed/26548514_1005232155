import java.util.Scanner;

public class TipCalculator
{
    
    public static void main(String[] args) {
        
        System.out.println("Input your satisfaction: 1 or 2 or 3");
        Scanner in = new Scanner (System.in);
        int thesat= in.nextInt();
        System.out.println("input your meal price");
        double tip1 = in.nextDouble();
        
        
        
        if (thesat==3)  {
            
            System.out.println ("$" + tip1*.2);
           
           
            
        
        }
        
         else if (thesat==2)  {
            
            System.out.println ("$" + tip1*.15);
           
            
        }
        
         else if  (thesat==1)  {
            
            System.out.println ("$" + tip1*.10);
           
            
        }
        System.out.println ( "Satisfaction level= " +thesat);
        
    }
    
    
}
}