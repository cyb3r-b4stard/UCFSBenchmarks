import java.awt.*;
import java.awt.event.*;

public class MouseClick {
public static void main(String[]args){
MouseClick MC = new MouseClick();


class MyMouseListener extends MouseAdapter{
public void mouseClick(MouseEvent me){
int i=0;
i++;

}
Frame f = new Frame("Button click measurer");
f.setSize(600,600);
f.setVisible(true);
Button button = new Button("Mouse Clicks:"+i);
button.setBounds(100,150,70,70);
button.addMouseListener(new MyMouseListener());
f.add(button);
/*
just added the mouse listener, now I add the
button
*/
f.addWindoListener(new WindowAdapter());{
windowClosing(WindowEvent);{
System.exit(0);
}
}

}
}
}