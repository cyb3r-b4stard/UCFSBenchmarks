package question2;

import question1.Contributeur;
import question1.GroupeDeContributeurs;
import question1.Visiteur;

public class CompositeValide implements Visiteur<Boolean>{

    public Boolean visite(Contributeur c){
       
        if (this.visite(c.sodle());< 0)
            return false;
        else 
            return true;
    }

    public Boolean visite(GroupeDeContributeurs g) {
        boolean res = false;
        Contributeur contrib= null;
        this.visite(g);

        for( Object c :  g)
            contrib = (Contributeur) c;
        if( contrib.solde()< 0 || contrib.nombreDeCotisants() == 0)
            res = false;
        else 
            res= true;
        return res ;
    }
}