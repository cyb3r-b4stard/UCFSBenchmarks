
import java.util.Scanner;


public class Rock
{
    public static void main (String[] args)
    {
	Scanner scan = new Scanner(System.in);

        String personPlay;     
        String computerPlay;    
        int computerInt;        
        
                                
	System.out.println("What play would you like to make");
	personPlay= scan.next();
	System.out.println("I would like to make " + personPlay);
	
	

	computerInt = (int)(Math.random()*3);  
	if (personPlay.equalsIgnoreCase ("R"))
	personPlay=("R");
	else if (personPlay.equalsIgnoreCase ("P"))
	personPlay=("P");
	else if (personPlay.equalsIgnoreCase ("S"))
	personPlay=("S");
      
        if (computerInt== 0 )
        computerPlay="R";
        else if (computerInt== 1)
        computerPlay="P";
        else if (computerInt== 2)
        computerPlay= "S";
System.out.println(
            
             if (personPlay.equalsIgnoreCase(computerPlay)) 
        { 
            System.out.println("It's a tie!");
        }
        else if (personPlay.equals("R"))
            { 
            if  (computerPlay.equals("S"))
                {
                System.out.println("Rock crushes scissors.  You win!!");
                }
            else
                {
                    System.out.println("Paper covers rock!"); 
                }
            }
            else if (personPlay.equals("P"))
            {
            if (computerPlay.equals("S")) 
               {
                System.out.println("Scissors cuts paper! Computer wins!");
               }
              else 
              {
                  System.out.println ("Paper covers rock");
              }
            }
              else 
              {
                  if (computerPlay.equals("R"))
                  {
                      System.out.println("Rock crushes scisscors!"); 
                  }
                  else if (computerPlay.equals ("P"))
                  {
                      System.out.println ("Scisscors cuts paper!");
                  }
                }
    }
}