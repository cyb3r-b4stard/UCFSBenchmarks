public class linAFA
{
    private double anschaffungskosten;
    private int nutzungsdauer;
    private double abschreibungsbetrag;
    private int jahr;
    private double restbuchwert;
    private String wirtschaftsgut;
    private double gesamtAbeschreibung;

    /**
     * Konstruktor für Objekte der Klasse linAFA
     */
    public void lineareAbeschreibung (String wirtschaftsgut, double anschaffungskosten, int nutzungsdauer)
    {
    this.anschaffungskosten=0;
    this.nutzungsdauer=0;
    this.abschreibungsbetrag=0;
    this.jahr=0;
    this.restbuchwert=0;
    this.wirtschaftsgut="";
    this.gesamtAbeschreibung=0;
   
    
    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public in setRestbuchwert(double Restbuchwert)
    {
        restbuchwert=Restbuchwert;
    }
    
   
   
    }
    
    

}