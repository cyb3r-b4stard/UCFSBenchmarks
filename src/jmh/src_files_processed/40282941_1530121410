import java.util.Scanner;

public class DiceRoller
{
    public static void main(String[] args)
    {
        String cont = new String();
        Scanner kb = new Scanner(System.in);
        Die die = new Die();
        int faces;
        int x = 0;
        

        
        System.out.println("How many sides would you like your die to have?: ");
        faces = kb.nextInt();
        
        while(x > 0)
        {
            System.out.println("You have rolled a " + die.roll() );
            if(x > 0)
            {
                System.out.println("Would you like to roll again? (y/n): ");
                if (cont.equalsToIgnoreCase("n")
                {
                    break;
                }
                
                if (cont.equalsToIgnoreCase("y")
                {
                    System.out.println("You have rolled a " + die.roll();
                }
            }
        }
    }
}