import CITS2200.*;
/**
 * ##### # ########### ## ##### ########## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class StackBlock implements CITS2200.Stack
{
    private Object[] stackArray;
    private int stackSize;
    private int topOfStack = -1;
    
    StackBlock(int size) {
        stackSize = size;
        stackArray = new Object[size];
    }
    
    public  boolean isEmpty() {
        if(topOfStack == -1)
        return true;
        
        else return false;
    }
    
    public boolean isFull() {
        if(topOfStack+1 == stackSize)
        return true;
        
        else
        return false;
    }
    
    public void push(Object a) throws Underflow {
        if(topOfStack + 1 < stackSize) {
            topOfStack++;
            stackArray[topOfStack] = a;
        } else System.out.println("The stack is full");
    }
    
    public Object examine() throws Underflow {
       return stackArray[topOfStack];
    }
    
    public Object pop() throws Underflow {
        if(!isEmpty()) {
            Object a = staackArray[topOfStack];
            topOfStack -=;
            return a;
        }
        
        else throw new Underflow("Deleting from an empty stack");
    }
}