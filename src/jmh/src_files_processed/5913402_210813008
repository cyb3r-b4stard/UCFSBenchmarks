public class Livro 
{
    private String titulo;
    private String autor;
    private int paginas;
    private double preco;
    private int numeroDaEdicao;
    private int emprestado;
    
    public Livro(String tit, String aut, int pag!= 0, double prec != 0 , int numEd != 0)
    {
        titulo = tit;
        autor = aut;
        if(pag >=0)
        {
            paginas = pag;
        }
        else
        {
            System.out.println("Digite um número válido para quantidade de paginas!");
        }
        
        if(pag >=0)
        {
            preco = prec;
        }
        else
        {
            System.out.println("Preço não pode conter valores negativo!");
        }
        
        if(numEd >=0)
        {
            numeroDaEdicao = numEd;
        }
        else
        {
            System.out.println("Número de Edição não pode ser negativo!");
        }
        
        if(emprestado >=0)
        {
            emprestado++;
        }
        else
        {
            System.out.println("Emprestado não pode conter números negativos!");
        }
    }
    
    public void setTitulo(String novoTitulo )
    {
        titulo = novoTitulo;     
    }
    
    public void setAutor (String novoAutor)
    {
        autor = novoAutor;
    }
    
     public void setPaginas (int novoPaginas)
    {
        if( novoPaginas >= 0)
        {
            paginas = novoPaginas;
        }
        else
        {
            System.out.println("Número de Páginas não pode ser negativo!");
        }
    }
    
     public void setPreco ( double novoPreco)
    {
        if( novoPreco >= 0)
        {
            preco = novoPreco;
        }
        else
        {
            System.out.println("O valor de venda não pode ser negativo!");
        }
    }
    
    public void setNumDaEdicao ( int novoNumDaEdicao)
    {
         if( novoNumDaEdicao >= 0)
         {
             numeroDaEdicao = novoNumDaEdicao;
         }
         else
         {
             System.out.println("O número de edição não pode ser negativo!");
         }
    }
    
    public void setEmprestado()
    {
        if(emprestado >=0)
        {
            emprestado++;
        }
        else
        {
            System.out.println("Emprestado não pode conter números negativos!");
        }
    }
    
    public String getTitulo()
    {
        return titulo;
    }
    
    public String getAutor()
    {
        return autor;
    }
    
    public int getPaginas()
    {
        return paginas;
    }
    
    public double getPreco()
    {
        return preco;
    }
    
    public int getNumeroDaEdicao()
    {
        return numeroDaEdicao;
    }
    
    public int getEmprestado()
    {
        return emprestado;
    }
    
    public void imprimirDados()
    {
        System.out.println("titulo:"+ titulo + "\nAutor:"+ autor +"\nPaginas:"+ paginas + "\nPreco:"+ preco + "\nNumero Da Edicao:"+ numeroDaEdicao +"\nEmprestado:"+ emprestado + " vezes" );
    }
    
}