
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Piece
{
   public String description;
   public double price;
   public double pricekg;
   public boolean fragile;
   public boolean tvared;
   public Piece(String desceription, double price, double pricekg, boolean fragile, boolean tvared)
   {
       this.description  = description;
       this.price = price;
       this.pricekg = pricekg;
       this.fragile = fragile;
       this.tvared = tvared;
   }
   
   public Piece(String description, double price)
   {
       this.description  = description;
       this.price = price;
   }
   
   public boolean getFragile()
   {
       return fragile;
   }
   
   public String getDescription()
   {
       return description;
   }
   
   public boolean getTvared()
   {
       return tvared;
   }
   
   public boolean equals( Piece p)
   {
       return((this.description).equals(p.description)) && ((this.price).equals(p.price)));
   }
   
   

}