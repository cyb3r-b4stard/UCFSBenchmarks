import java.util.ArrayList;

/**
 * # ##### ## ##### # #### ## ########### #######.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class LoanCompany
{
    private ArrayList<StudentLoan> loans;
    private StudentLoan loan;

    /**
     * Constructor for objects of class LoanCompany
     */
    public LoanCompany()
    {
        loans = new ArrayList<StudentLoan>();
    }
    
    /**
     * Add a loan to the array
     */
    public void addLoan(String id, int amount)
    {
        loan = new StudentLoan(id,amount);
        loans.add(loan);
    }
    
    /**
     * States the number of loans
     */
    public int getNumberOfLoans()
    {
        return loans.size();
    }
    
    /**
     * Print list of loans
     */
    public void list()
    {
        System.out.println("Track listing: ");

        for(StudentLoan loan : loans) {
            loan.getDetails;
        }
        System.out.println();
        
        }
    }