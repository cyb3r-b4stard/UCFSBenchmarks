import java.util.*;
public class RatClient
{
    public static void main(String args [])
    {
        Scanner reader = new Scanner(System.in);
        int a, b, c, d, again, choice;
        
        do
        {
            System.out.println("Enter a numerator and denominator.");
            a = reader.nextInt();
            b = reader.nextInt();
            Rational rat1 = new Rational(a, b);
            do
            {
                System.out.println("Enter what you would like to do to these.");
                System.out.println("1. View numbers as decimal");
                System.out.println("2. Add numbers");
                System.out.println("3. Subtract numbers");
                System.out.println("4. Multiply numbers");
                System.out.println("5. Divide numbers");
                choice = reader.nextInt();
                while(choice<1 || choice>5)
                    System.out.println("Re-Enter");
                    switch(choice)
                    {
                        case 1: System.out.println(rat1 + " = " +  rat1.dec());
                                break;
                                
                        case 2: System.out.println("Enter another numerator and denominator.");
                                c = reader.nextInt();
                                d = reader.nextInt();
                                Rational rat2 = new Rational(c,d);
                                System.out.println(rat1.add(rat1));
                                break;
                                
                        case 3: System.out.println("Enter another numerator and denominator.");
                                c = reader.nextInt();
                                d = reader.nextInt();
                                Rational rat2 = new Rational(c,d);
                                System.out.println(rat1.sub(rat2));
                                break;
                                
                        case 4: System.out.println("Enter another numerator and denominator.");
                                c = reader.nextInt();
                                d = reader.nextInt();
                                Rational rat2 = new Rational(c,d);
                                System.out.println(rat1.mult(rat2));
                                break;
                                
                        case 5: System.out.println("Enter another numerator and denominator.");
                                c = reader.nextInt();
                                d = reader.nextInt();
                                Rational rat2 = new Rational(c,d);
                                System.out.println(rat1.div(rat2));
                                break;
                                
                    }
                
                }while (again = 1 || again = 2);
        }while (again = 1);
    }
}