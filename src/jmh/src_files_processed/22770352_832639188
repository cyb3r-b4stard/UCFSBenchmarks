
import java.util.*; 

public class ChangeMaker
 {             
     public static void main(String[] args)             
     {                   
         Scanner kbReader = new Scanner(System.in);
         System.out.println("Put in an integer");
         int num1= kbReader.nextInt();
         kbReader.nextLine();
         System.out.print("Your integer+10=");
         System.out.println(num1+10);
         System.out.print("Hello, ");
         String name1= kbReader.nextLine();
         System.out.print("Hello, <");
         System.out.print(name1);
         System.out.println(">");
         System.out.print(name1+(""));
         System.out.println(" Nice to meet you");
         System.out.print("Enter in a decimal ");
         double something= kbReader.nextDouble();
         kbReader.nextLine();
         System.out.print("Your decimal squared=");
         System.out.println(something*something);
         System.out.print("What's your friends name?");
         String name2=kbReader.nextLine();
         System.out.print("What's your friends age?");
         int age= kbReader.nextInt();
         kbReader.nextLine();
         System.out.print("So ");
         System.out.print(name2);
         System.out.print(" is ");
         System.out.print(age);
         System.out.println(" years old");
         System.out.print("Enter an integer for the Radius of your circle <");
         int radius= kbReader.nextInt();
         double pi;
         pi=3.14;
         System.out.print("So the area of your circle is ");
         System.out.println((radius*radius)*pi); 
         System.out.println("Enter the number of seconds you want your brick to take to fall on the ground");
         double time=kbReader.nextDouble();
         kbReader.nextLine();
         System.out.print("So the distance between the brick and the ground is ");
         System.out.println((time*time)*16.087);
         System.out.println("What was your friends name again?");
         String name1
         System.out.println(name1+name1+name1);
         
         
         
        }       
    }  