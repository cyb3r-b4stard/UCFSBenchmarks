
public class StopLight
{
    private double latitude = 40.67;
    private double longitude = 73.94;
    private double direction;
    private String currentColor;
    public StopLight(){
        currentColor = "red";
    }
    public StopLight(double lat, double lon, double dir, String color){
        setLatitude(lat);
        setLongitude(lon);
        setDirection(dir);
        setColor(color);
    }
    public boolean setLatitude(double lat){
        if(lat < latitude + 2 && lat > latitude - 2){
            latitude = lat;
            return true;
        }
        else{
            latitude = 40.67;
            return false;
        }
    }
    public boolean setLongitude(double lon){
        if(lon < longitude + 2 && lon > longitude - 2){
            longitude = lon;
            return true;
        }
        else{
            longitude = 73.94;
            return false;
        }
    }
    public void setDirection(double dir){
    }
    public void lightInformation(){
        System.out.println("Latitude: " + latitude);
        System.out.println("Longitude: " + longitude);
        System.out.println("Direction: " + direction);
        System.out.println("Color: " + currentColor);
    }
    public static void main(String [] args){
        StopLight broadwayAndHouston = new StopLight(40.0, 71.2, 180, "green");
        broadwayAndHouston.lightInformation();
        
        StopLight ParkAveAnd34thSt = new StopLight();
        ParkAveAnd34thSt.setColor("red");
        
        if(currentColor = "red"){
            
        }else if(){
            
        }else{
            
        }
    }
    public void setColor(String color){
        
    }
    
}