      System.out.print ("["+a+","+b+"]  ");
      System.out.println  (" ROOT OF f(x) is:  "+bisection( new Function1(),a,b,0.0001));
      System.out.println    ("              ROOT OF g(x) is:  "+bisection( new Function2(),a,b,0.0001));
      System.out.println    ("              ROOT OF h(x) is:  "+bisection( new Function3(),a,b,0.0001));
      System.out.println    ("              ROOT OF s(x) is:  "+bisection( new Function4(),a,b,0.0001));
      
  
