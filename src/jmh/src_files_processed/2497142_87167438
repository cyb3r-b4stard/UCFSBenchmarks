
public class rizes    
{
   
    public static double bisection (MathFunction func, double a, double b, double epsilon) 
    {
       double m;
        if (func.Function(a)*func.Function(b) <= 0)               
                {
                    for (m=(a+b)/2; Math.abs(a-b)> epsilon; 
                           m=(a+b)/2)
                          if (func.Function(a)*func.Function(m) <= 0)
                              {b=m;} else           
                              {a=m;} }
                    else {m=-100;}
                    
                    return m; }
    public static double Regula Falsi (MathFunction func, double a, double b, double epsilon) 
    {
       double m;
        if (func.Function(a)*func.Function(b) <= 0)               
                {
                    for (m=(a*func.Function(b)-b*func.Function(a))/(func.Function(b)-func.Function(a))  ; Math.abs(func.Function(m))> epsilon; 
                    m=(a*func.Function(b)-b*func.Function(a))/(func.Function(b)-func.Function(a))
                           
                          if (func.Function(a)*func.Function(m) <= 0)
                              {b=m;} else           
                              {a=m;} }
                    else {m=-100;}
                    
                    return m; }
                    
