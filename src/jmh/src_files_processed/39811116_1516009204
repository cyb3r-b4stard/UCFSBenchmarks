import java.util.ArrayList;
import java.util.Iterator;

/**
 * ## ## ########### ## ## ##### ######
 * ####### ####### ## ###### ########## ## #####
 * 
 * @###### #### (## ### ########## ## ## ##### ########)
 * @####### ##.##.####
 */
public class Agenda
{

    private ArrayList<String> notas;    

    /**
     * Inicializa el campo notas
     */
    public Agenda()
    {
        notas = new ArrayList<String>();
        inicializarAgenda();
    }

    /**
     * Guarda una nueva nota en la agenda
     * @param nota La nota a ser guardada
     */
    public void guardarNota(String nota)
    {
        notas.add(nota);
    }

    /**
     * Borra el número de la nota deseada
     */
    public void borrarNota(int numeroNotas)
    {
        if(numeroNotas >= 0 && numeroNotas < notas.size() ) {
            notas.remove(numeroNotas);
        }
    }

    /**
     * @return El número de notas que hay actualmente en la agenda
     */
    public int numeroDeNotas()
    {
        return notas.size();
    }

    /**
     * Muestra una nota
     * @param numeroNota El número de la nota a ser mostrada
     */
    public void mostrarNota(int numeroNota)
    {
        if(numeroNota < numeroDeNotas()) {
            System.out.println(notas.get(numeroNota));   
        }
    }

    /**
     * Inicializa la agenda con una serie de notas para hacer pruebas
     */
    private void inicializarAgenda ()
    {
        guardarNota ("Esta noche voy al cine");
        guardarNota ("Tengo que comprar el pan");
        guardarNota ("He quedado con el dentista");
        guardarNota ("Tengo que terminar el programa");
    }

    /**
     * 
     */
    public void imprimirNotas()
    {
        for(String nota : notas) {
            System.out.println(notas);
        }
    }

    /**
     * 
     */
    public void numerarNotas()
    {
        System.out.println ("Las notas de la agendea son:");
        System.out.println ();
        
        int indice = 0;
        while(indice < notas.size() {
            System.out.println(indice + ":" + notas.get(indice));
            indice ++;
        }
    }
}