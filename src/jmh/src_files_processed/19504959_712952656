

public class Demo
{
    public static void display (int p,int i)
   {
    int d;   
    int t= p*i;
    if (t>=10000)
    System.out.println("Discount ="  +t*15/100);
    System.out.println("Discounted amount = " +t-d);
    
    if (t>=5000) 
    System.out.println("Discount"+t*10/100);
    System.out.println("Discounted amount = " +t-d);
    else
    if (t<5000)
      System.out.println("NO DISCOUNT !!");
      
}
}