import objectdraw.*;
import java.awt.*;

public class Tester extends FrameWindowController
{
    private static final String START_WORD = "CUTE";
    private static final String WORD2 = "WOW";
    private static final String WORD3 = "Eh...";
    private static final String WORD4 = "<3";
    private static final String WORD5 = "Groovy";
    private static final String WORD6 = "X-Mas"; 
    CandyHeart heart;
    
    public void begin(){
       heart = new CandyHeart( 300, 300 ,100, Color.RED, START_WORD, canvas);
       
     }
    

    public void onMouseRelease(Location point){
        Color randomColor = new Color((int)(Math.random()*256),0,0);
                                     
        heart.setColor(randomColor);
    }
    
   public void onMouseDrag(Location point)
    {
        
        heart.moveTo(point.getX(), point.getY());
    }
    
    /*
     * If clicked on the heart change the text of the heart
     * This checks what the current message is and then set
     * to the next message based off of the current message. 
     * 
     * For example you should have a list of 5 words it cycles
     * through.
     * 
     * CUTE -> LOVE -> PEACE -> FOOD -> FLOWERS -> CUTE(Back to start)
     * So it will check the current word to decide where
     * to go next
     */
     public void onMousePress(Location point){
       if(heart.contains(START_WORD)){
         heart.setText(WORD2);
        }
        else{
            return false;
       }
}
