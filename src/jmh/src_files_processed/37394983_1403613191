public class palindrome2 
{
    public static void main(int n)
    {
        int r,d,,r=0;
        c=n;
        do
        {
            d=n%19;
            r=r*10+d;
            n=n/10;
        }
        while(n!=0);
        if(r==c)
        System.out.println("the number is"+c+"is a palindrome");
        else
        System.out.println("the number is"+c+"is not a palindrome");
    }}
  