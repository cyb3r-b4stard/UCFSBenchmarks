 */
public class Osoba
{
    
    private static final Barva BARVA_HLAVY = Barva.RUZOVA;
    private static final Barva IMPL_BARVA_TELA = Barva.SEDA;
    private static final int IMPL_VELIKOST_HLAVY = 60;
    private static final double POMER_HLAVA_TELO = 6.0/8.0;
    private static final double POMER_TELO_VYS_SIR = 8.0/7.0;
    private static int pocet = 1;
    
    
    private final Elipsa hlava;
    private final Obdelnik telo;
    
    
    
    
    private String nazev = null;
    
    private final int PORADI = ++pocet;
    
    

    
    
    
    
public Osoba() {
    this(0, 0, IMPL_BARVA_TELA);
}

public Osoba(int x, int y, Barva barvaTela) {
    this(x, y, IMPL_VELIKOST_HLAVY, barvaTela);
}

public Osoba(int x, int y, int velikostHlavy, Barva barvaTela) {
    this(x, y, velikostHlavy, POMER_HLAVA_TELO, POMER_TELO_VYS_SIR, barvaTela);
}
    
    
public Osoba(int x, int y, int velikostHlavy, double pomerHlavaTelo, double pomerTelo, Barva barvaTela) {
    
    /* Vyska tela = vTelo ---> velikostHlavy/pomerHlavaTelo */
    double vTelo = velikostHlavy / pomerHlavaTelo;
    /* Sirka tela = sTelo ---> Vyska Tela/pomerTelo */
    double sTelo = vTelo/pomerTelo;
    /* Zalozeni a, b promenych pro pocitani pomeru tela a hlavy */
    int a = 0;
    int b = 0;
    /* Pocitani pomeru tela a hlavy pro konecne posunuti */
    if(velikostHlavy < sTelo) {
        a = (int)((sTelo-velikostHlavy)/2);
    }
    
    else {
        
        b = (int)((velikostHlavy-sTelo)/2);
        
    }
    
        
    hlava = new Elipsa(x+a, y, velikostHlavy, velikostHlavy, BARVA_HLAVY); 
    telo = new Obdelnik(x+b, y+velikostHlavy, (int)sTelo, (int)vTelo, barvaTela);
        
}

    
    
   
    
    
    
   
    
    
    
    
    
/* Navrati hlavu */
public Elipsa getHlava() {
        return hlava;
}
    
/* Navrati telo */
public Obdelnik getTelo() {
        return telo;
}
    

public int getY() {
        return hlava.getY();
}
    

public int getX() {
        if(telo.getX() > hlava.getX()) {
                return hlava.getX(); 
    }
                else {
                return telo.getX();
    }
}
   
/* Nastavi barvu sirku osoby */
public int getSirka() {
        if(telo.getSirka() < hlava.getSirka()) {
                return hlava.getSirka();
        }
                else {
                return telo.getSirka();    
        
        }
}
    
/* Dostaneme vysku cele osob */
public int getVyska() {
        return hlava.getVyska() + telo.getVyska();
}

/* Dostaneme nazev */
public String getNazev() {
        getNazev x = new getNazev();
        class nazev = x.getClass();
        String sname = xy.getSimpleName();
        returt sname;
        
}

/* ZÃ­skame barvu tela */
public Barva getBarvaTela() {
        return telo.getBarva();
}

/* Nastavi barvu "z" telu */
public void setBarvaTela(Barva z) {
        telo.setBarva(z);
}
}