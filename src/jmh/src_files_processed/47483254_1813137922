import java.text.*;
import java.util.*;
import java.io.*;
import java.lang.*;


public class Karyawan 
{
    
private String id_karyawan,nama,alamat,jabatan;
 private double totalGaji,tahunpesiun;
private double tabunganwajib,gajipokok,gajikotor,jam_kerja,jumlah_jam_kerja,upah_jam_kerja;
private int umur,tahunkerja,masakerja,mulaikerja,jns_karyawan;

  public void setId_karyawan(String id_karyawan) {
     this.id_karyawan=id_karyawan;}
     
 public String getId_karyawan()
     {return id_karyawan;}
  
  public void setNama(String nama) {
     this.nama=nama;}
     
 public String getNama()
     {return nama;}  
     
   public void setAlamat(String alamat) {
     this.alamat=alamat;}
     
 public String getAlamat()
     {return alamat;}  
 public void setJabatan(String jabatan) {
     this.jabatan=jabatan;}
     
 public String getJabatan()
     {return jabatan;}  
     
   public void setMulaikerja(int mulaikerja) {
     this.mulaikerja=mulaikerja;}
 public int getMulaikerja()
     {return mulaikerja;}
     public void setTahunkerja(int tahunkerja) {
     this.tahunkerja=tahunkerja;}
 public int getTahunkerja()
     {return tahunkerja;}
     
      public void setJns_karyawan(int jns_karyawan) {
     this.jns_karyawan=jns_karyawan;}
     
 public int getJns_karyawan()
     {return jns_karyawan;}
   public void setUmur(int umur) {
     this.umur=umur;}
     
 public int getUmur()
     {return umur;}
     
      public void setGajikotor(double gajikotor){
            this.gajikotor=gajikotor;} 
public double getGajikotor(){
      
            return gajikotor;}  
            
     public void setGajipokok(double gajipokok){
            if (this.jns_karyawan==1){
            gajipokok=2000000;}
            
            else{gajipokok=10000;}
        
        }
public double getGajipokok(){
      
            return gajipokok;}    
   
     
  public void setTotalGaji(double totalGaji){
            this.totalGaji=totalGaji;} 
public double getTotalGaji(){
      
            return totalGaji;}    
    public void setJam_kerja(double jam_kerja){
            this.jam_kerja=jam_kerja;} 
public double getJam_kerja(){
      
            return jam_kerja;} 
     
public void setJumlah_jam_kerja(double jumlah_jam_kerja){
            this.jumlah_jam_kerja=jam_kerja*5;} 
public double getJumlah_jam_kerja(){
    
            return jumlah_jam_kerja;}        
public void setUpah_jam_kerja(double upah_jam_kerja){
            this.upah_jam_kerja=upah_jam_kerja;} 
public double getUpah_jam_kerja(){
      
            return upah_jam_kerja;}  
   
  public void IsiData(){
 Scanner scanner =new Scanner(System.in);
 System.out.println(" Program untuk menghitung gaji kotor dan bersih karyawan:");
  System.out.println("id karyawan : ");
  id_karyawan=scanner.next();
   System.out.println("Nama : ");
    nama=scanner.next();
  System.out.println("umur : ");
    umur=scanner.nextInt();
    System.out.println("Jenis Karyawan pilih 1 : jika karyawan tetap atau 2: karyawan harian : ");
    jns_karyawan=scanner.nextInt();
    System.out.println("Jabatan : ");
    jabatan=scanner.next();
    System.out.println("Alamat: ");
   alamat=scanner.next();
     System.out.println("Mulai kerja : ");
    mulaikerja=scanner.nextInt();
   System.out.println("Tahun kerja sekarang : ");
   tahunkerja=scanner.nextInt(); 
   
   System.out.println("Jumlah jam kerja dalam sehari: ");
 jam_kerja=scanner.nextDouble();

 System.out.println("Upah jam kerja : ");
upah_jam_kerja=scanner.nextDouble();
}
         
   
            
     public void hitungmasakerja(){
     masakerja=tahunkerja-mulaikerja;
     System.out.println("Masa kerja :"  + masakerja) ;}
     
     public void hitungTahunPensiun(){   
      double tahunpesiun= 60-masakerja  ;
        System.out.println("Kurang tahun berapa lagi pesiun:"  +  tahunpesiun) ;}
        
     
        public void hitungGajiMingguan(){
   if (jumlah_jam_kerja>=40&& jns_karyawan=1){
       
    gajikotor=40*upah_jam_kerja+(1.5*(jumlah_jam_kerja-40)*upah_jam_kerja);
    
    

  }
  else{ gajikotor=jumlah_jam_kerja*upah_jam_kerja;}   
      
}
     public void gajiBulanan(){
    
   if (gajikotor>1000000){
     tabunganwajib=5000*4;
   totalGaji=gajikotor-tabunganwajib;
  
 }
 else { totalGaji=gajikotor;}
 
    }
        
      public void DisplayInfo(){ 
          System.out.println("Info gaji karyawan..");
      System.out.println("Id karyawan  :"+ getId_karyawan()); 
       System.out.println("Nama  :"  + getNama()); 
       System.out.println("Umur  :"  + getUmur()); 
     
       System.out.println("jabatan  :"  + getJabatan()); 
       System.out.println("Alamat :"  + getAlamat()); 
       hitungTahunPensiun();
        System.out.println("Gaji kotor :"  + getGajikotor()); 
       System.out.println("Total gaji yang didapat  :"  + getTotalGaji()); }  
                
      
 
 
}
