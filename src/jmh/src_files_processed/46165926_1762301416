
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Clsrm
{
    private int _classNum; 
    private int _classPlaces;
    private boolean _isAvailable; 
    
    /** 
     * this is the main constructor, it accepts shit
     */
    public Clsrm (int num, int maxPlaces, boolean isAvail)
    {
        _classNum = num;
        _classPlaces = maxPlaces;
        _isAvailable = isAvail;
    }
    
    /** 
     * this is the copy constructor, it copies shit
     */
    public Clsrm (Clsrm c)
    {
        this(c.getClassNum(), c.getClassPlaces(), c.getAvailable());
    }
    
    /** 
     * this is getClassNum(), it gets the tri-numbered class number because reasons. 
     */
    public int getClassNum()
    {
        return _classNum;
    }
    
    /** 
     * this is getClassPlaces, it tells us how many places are in the class
     */
    public int getClassPlaces()
    {
        return _classPlaces;
    }
    
    public void setClassPlace(classPlaces)
    {
        _classPlaces = classPlaces;
    }
    
    /** 
     * this is getAvailable, it tells you whether or not there are places in the class
     */
    public boolean getAvailable()
    {
        return _isAvailable;
    }
    
    public void setAvailable(boolean avail)
    {
        _isAvailable = avail;
    }
    
    public boolean handicappedSuitable()
    {
        return (_classNum<100);
    }
    
    public boolean equals(Clsrm other)
    {
        return (_classPlaces==other.getClassPlaces());
    }
    
    public boolean isBigger(Clsrm other)
    {
        return (_classPlaces>other.getClassPlaces());
    }
    
    public boolean isSmaller (Clsrm other)
    {
        return (other.isBigger(this));
    }
    
    public boolean isHigher (Clsrm other)
    {
        return (_classNum/100>other.getClassNum()/100);
    }
    
    public String toString()
    {
        return ("Class Number: " +_classNum +"\n" +"Places in Class: " +_classPlaces
            +"\n" +"Available places? " +_isAvailable);
    }
} 
