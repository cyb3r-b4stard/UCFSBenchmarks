import java.util.ArrayList;

/**
 * #### ## ########## ###### #.
 * ## #### # ##### #### #### #### ####
 * 
 * @###### #### #####
 * @####### #.#
 *
 * ##########: ##
 * ######: ####-####
 * #######: #
 * #### #######: ##/##/####
 * #### #######: ##/##/####
 *
 */
public class PatientVisit
{
    public static void main(String[] args)
    {
        String patientNamePrompt = "\nEnter patient's name: ";
        String patientNameError = "\n**Error** - The patient's name is required";

        String patientHealthNumError ="\n**Error** - The patient's health number is required";
        String physicianNamePrompt = "\nEnter physician's name: ";
        String physicianNameError = "\n**Error** - The physician's name is required";

        String physicianSpecialtyError = "\n**Error** - The physician's specialty is required";
        String physicianFeePrompt = "\nEnter physician's visit fee: ";
        String physicianFeeError = "\n**Error** - Invalid visit fee";
        
        ArrayList<Bill> bill = new ArrayList<Bill>();

        do
        {
            AssignmentHelper.clearScreen(); 
            
            headings();

            String patientName = AssignmentHelper.getStringInputFromKeyboard(patientNamePrompt, patientNameError);

            String patientHealthNumPrompt = "\nEnter " + patientName + "'s health number: ";
            
            String patientHealthNum = AssignmentHelper.getStringInputFromKeyboard(patientHealthNumPrompt, patientHealthNumError);

            Patient patient = new Patient(patientName, patientHealthNum);
            
            String physicianName = AssignmentHelper.getStringInputFromKeyboard(physicianNamePrompt, physicianNameError);
            
            String physicianSpecialtyPrompt = "\nEnter " + physicianName + "'s specialty: ";
            
            String physicianSpecialty = AssignmentHelper.getStringInputFromKeyboard(physicianSpecialtyPrompt, physicianSpecialtyError);
                       
            double physicianFee = AssignmentHelper.getDoubleInputFromKeyboard(physicianFeePrompt, physicianFeeError);
            
            Physician physician = new Physician(physicianName, physicianSpecialty, physicianFee);
            
            
            bill.add(new Bill(patient,physician);
            
        }
        while(AssignmentHelper.getYesNoFromKeyboard("\nAnother bill? (y/n): "));
        
        

    }

    /**
     * This prints out the headings, after every clear statement it will get recalled
     */
    private static void headings()
    {
        System.out.println("Java Clinic \nPatient Billing \n===============");
    }

}