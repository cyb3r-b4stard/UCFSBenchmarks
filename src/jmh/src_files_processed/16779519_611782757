public class Merging
{
    public static void mergeSort (String[]list)
    {
        doMergeSort (list, 0, list.legnth-1);
    }
    private static void doMergeSort (String[] list, int start, int end)
    {
        if (start < end){
            int middle = (start + end) / 2;
            doMergeSort(list, start, middle);
            doMergeSort(list, middle + 1, end);
            merge (list, start, middle, end);
        }
    }
    private static void merge (String[] list, int start, int middle, int end)
    {
        String[] temp = new String[end - start + 1]
        int index1 = start;
        int index2 = middle + 1;
        int indexTemp = 0;
        while (index1 <= middle && index2 <= end){
            if (list[index1].compareTo(list[index2]) < 0)
            {
                temp[indexTemp] = list[index1];
                index1++;
            }
            else
            {
                temp[indexTemp] = list[index2];
                index2++;
            }
            indexTemp++;
        }
        while (index1 <= middle){
            temp[indexTemp] = list[index1];
            index1++;
            indexTemp++;
        }
        while (index2 <= end){
            temp[indexTemp] = list[index2];
            index2++;
            indexTemp++;
        }
        for (indexTemp = 0; indexTemp < temp.length; indexTemp++)
            list [start + indexTemp] = temp[indexTemp];
    }
}