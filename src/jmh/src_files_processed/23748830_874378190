public class Formel9
{
    private int pi;
    
    public Formel9()
    {
        pi=3;
    }

    public int getPi()
    {
        return pi;
    }
    
    public int berechneRechteckFlaeche(int a, int b)
    {
        int rechteckFlaeche=a*b;
        return rechteckFlaeche;
    }
    
    public int berechneQuaderOberflaeche(int breite, int hoehe, int laenge)
    {
        int quaderFlaeche=2* berechneRechteckFlaeche(laenge, breite)+(laenge*hoehe)*4;
        return quaderFlaeche;
    }
    
    public int mal(int a, int b)
    {
        int ergebnis=a*b;
        return ergebnis;
    }
    
    public int berechnePhytagorad(int a, int b)
    {
        int c*c=mal(a)+mal(b);
        return mal(c);
    }
}