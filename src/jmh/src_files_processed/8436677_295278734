
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Tarjeta
{
    public int id;
    public String fechaEmision;
    public int saldo;
    public boolean estado;
    public int desc;
    public Cliente cliente;

    public Tarjeta()
    {
        id=0;
        fechaEmision="";
        saldo=0;
        estado=false;
        desc=0;
        cliente=null;
    }
    public Tarjeta(int id, String fechaEmision, int saldo, boolean estado, int desc, Cliente cliente)
    {
        id=(id);
        fechaEmision=(fechaEmision);
        saldo=(saldo);
        estado=(estado);
        desc=(desc);
        cliente=(cliente);
    }

    
    
    
                                public int getId ()
                                    {
                                        return id;
                                    }
                                public void setId (int id)
                                    {
                                        this.id=id;
                                    }
                                    
                                public String getFechaEmision ()
                                    {
                                        return fechaEmision;
                                    }
                                public void setFechaEmision (String fechaEmision)
                                    {
                                        this.fechaEmision=fechaEmision;
                                    }
                                
                                public int getSaldo ()
                                    {
                                        return saldo;
                                    }
                                public void setSaldo (int saldo)
                                    {
                                        this.saldo=saldo;
                                    }
                                    
                                public boolean getEstado ()
                                    {
                                        return estado;
                                    }
                                public void setEstado (boolean estado)
                                    {
                                        this.estado=estado;
                                    }
                                    
                                public int getDesc ()
                                    {
                                        return desc;
                                    }
                                public void setDesc (int desc)
                                    {
                                        this.desc=desc;
                                    }
                                
                                public Cliente getCliente ()
                                    {
                                        return cliente;
                                    }
                                public void setCliente (Cliente cliente)
                                    {
                                        this.cliente=cliente;
                                    }
                                    
                                public void printClase ()
                                    {
                                        System.out.println ("Número de tarjeta: "+id);
                                        System.out.println ("Fecha de emisión de tarjeta: "+fechaEmision);
                                        System.out.println ("Saldo: "+saldo);
                                        System.out.println ("Estado: "+estado);
                                        System.out.println ("Descuento aplicado: "+desc);
                                        System.out.println ("Cliente: "+cliente);
                                    }
                                    
                                public void printObtenerDatos ()
                                    {
                                        System.out.println ("Nombre del cliente: "+cliente.getNombre());
                                        System.out.println ("Saldo: "+saldo);
                                        System.out.println ("Descuento aplicado: "+desc+"%");
                                    
                                    }    
                                    
                                public void printOtorgarDescuento()
                                {
                                   if (estado=true & saldo=20000)
                                   {
                                       desc=10;
                                    }
                                    
                                }
                           
}