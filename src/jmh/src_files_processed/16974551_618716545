import java.util.Math;
public class SavingsAccount  extends Account  
{
    private double savingsBalance ;
    private double interestRate;


    /**
     * Constructor for objects of class Savings
     */
    public SavingsAccount(String name,int accountNumber, double savingsBalance)
    {
        super(name, accountNumber);

        setSavingsBalance(savingsBalance);

    }
    public void setSavingsBalance(double savingsBalance)
    {
        this.savingsBalance=savingsBalance;
    }

    public void withdrawSavings(double amount){
        savingsBalance= savingsBalance-amount;
    }

    public void depositSavings(double amount){
        savingsBalance=savingsBalance + amount;
    }

    public double getSavingsBalance(double savingsBalance)
    {
        return savingsBalance;
    }

    public double calculateInterest(double r, int n, int t){
        double x=Math.pow(1+r/n,n*t);
        r=r*.01;
        double a=savingsBalance*(Math.pow(1+(r/n)),
        (n*t)
        ) ;
    }

    public String toString(){
        return super.toString() + "\nSavings Balance is : " + savingsBalance;
    }
}
