public class Question7
{
    public static void main (String [] args)
    {
        int n=4;
        int a=0;
        int sum=0;
        for(a=0,a<=2n;a++)
        {if (a%2==0){
            sum= sum+a;
        }}
        System.out.print(sum)
    }}