import java.util.*;
public class grades
{
    public static void main(String[] args)
    {
        Scanner scan = new Scanner(System.in);
        int numTests = 0, sumScores = 0, score = 0;
        double grade;
        int numPass = 0, numFail = 0;
        
        while (score != -1){
          numTests++;
          sumScores += score;
          System.out.println("Enter your grade for test " + numTests + ":");
          score = scan.nextInt();
          if (score < 60)
                numFail++;
          else if(score >= 60)
                numPass++;
          }  
            
            
            
            
        }
        grade = sumScores / numTests;
        System.out.println("Your average grade was " + grade + "%");
        System.out.println("You passed " + numPass + " tests and failed " + numFail + " tests.");
    }
}