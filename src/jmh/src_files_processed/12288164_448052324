
public class KinoSala {
    private Sedacka[] aRozlozenieSedadiel;

    public KinoSala(int paStranaSedacky) {
        aRozlozenieSedadiel = new Sedacka[5];
        int polohaY = 10;
        for(int riadok = 0 ; riadok < 5; riadok++){
            int polohaX = 10;
            for(int stlpec = 0 ; stlpec < 5 ; stlpec++){
                Sedacka sedadlo = new Sedacka(paStranaSedacky,polohaX,10,"black");
                aRozlozenieSedadiel[stlpec] = sedadlo;
                aRozlozenieSedadiel.lenght;
                polohaX += paStranaSedacky + 10;
            }
        }
    }

    public void zobraz(){
        for(Sedacka sedacky : aRozlozenieSedadiel){
            sedacky.zobraz();
        }
    }
}