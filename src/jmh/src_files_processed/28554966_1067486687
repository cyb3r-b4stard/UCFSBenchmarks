
public class ADDITION
      {
          private double Zahl_1;
          private double Zahl_2;
          
          
          public ADDITION (double summand_1, double summand_2)
          {
              Zahl_1=summand_1;
              Zahl_2=summand_2;
          }
          private double addieren()
            {
                return Zahl_1+Zahl_2;
            }
      
          public viod zeigeAddition()
          {
              System.out.print(zahl_1);
              System.out.print("+");
              System.out.print(zahl_2);
              System.out.print("=");
              System.out.print(addieren());