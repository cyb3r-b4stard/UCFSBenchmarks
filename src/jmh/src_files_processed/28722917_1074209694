
/**
 * #### ##### ## #### ### ######## #### ##### ######.
 * 
 * @###### ######## #####
 * @####### ######## ##/##/####
 */
public class FixedArray
{
    private char[] square;

    /**
     * Constructor for objects of class FixedArray
     */
    public FixedArray()
    {
        square = new char[10];
    }

    /**
     * Sets a space (' ') in each element of the array
     */
    public void clearSquares()
    {
        for(int index = 0; index < square.length; index++)
        {square[index] = ' ';}
    }

    /**
     * Places a star ('*') in the odd-numbered indices
     */
    public void starsOnOdd()
    {
        for(int index = 0; index < square.length; index++)
            if(index%2 != 0)
            {square[index] = '*';}
    }

    /**
     * Shows the content of each square
     */
    public void displaySquares()
    for(int index = 0; index < square.length; index++)
    System.out.println(index + ":" + square);
}