import java.util.*;
import java.io.*;
/**
 * ##### # ########### ## ##### ########### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class RandomSpell
{
    public static void main(String[] args)
    {
        System.out.println("Random Spell Generator");
        RandomSpell spells = new RandomSpell();
        
        int display = 1;
        if(args.length == 1)
        {
            try
            {
                display = Integer.parseInt(args[0]);
            }
            catch(NumberFormatException e)
            {
                System.out.print("Could not convert ");
                System.out.print(args[0]);
                System.out.println(" to an integer.");
            }
        }
        spells.DisplayRandomSpell(display);
    }
    
    private List<String> _spells;
    
    public RandomSpell()
    {
        private boolean LoadSpellList()
        {
            _spells = new ArrayList<String>();
            try
            {
                FileReader reader = new FileReader("Spells.txt");
                
                int c;
                StringBuilder temp = new StringBuilder();
                while((c = reader.read()) != -1)
                {
                    if(c != 10 && c != 13)
                    {
                        temp.append((char)c);
                    }
                    else
                    {
                        if(temp.length() != 0)
                        {
                            _spells.add(temp.toString());
                            temp = new StringBuilder();
                        }
                    }
                }
                if(temp.length() != 0)
                {
                    _spells.add(temp.toString());
                }
                catch(FileNotFoundException e){
                {
                    System.out.println("Could not find the Spells.txt file in the current directory.");
                    return false;}
                }
           }
        }
    }
}