import java.util.Scanner;
public class TestListaCantanteFamoso
{
    public static void main(String[] args)
    {
        
       
       while(true)
     {
         i++;
        System.out.println ("Por Favor Introdusca la Entrada");
        EntradaTeclado primeraEntrada =new EntradaTeclado();
        System.out.println("Gracias Por Agregar a otro cantante");
        ListaCantanteFamoso lista =new ListaCantanteFamoso("");
        lista.agregarNombre(primeraEntrada.getEntrada());
        System.out.println("Cantidad de Cantantes en la lista : "+lista.getTamanho());
        lista.mostrarLista();
        System.out.println("Deseas Ingresar Otro Cantante Famoso");
        Scanner escanearTeclado=new Scanner(System.in);
        boolean resp=escanearTeclado.nextLine();
        if(resp==true)
        {
            return true;
        }else{
        System.out.println("Muchas Gracias ");
        }
        
      
    }
      
    }
    }
}
    
