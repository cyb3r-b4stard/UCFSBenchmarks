import java.lang.StringBuilder;
import java.util.Scanner;

public class Palindrome {
    public static void main (String[] args) {
        Scanner input;
        String raw;
        
        
        input = new Scanner(System.in);

      do{
          System.out.println("Enter line: ");
          
          raw = input.nextLine();
          
          String rawQ = raw.toLowerCase();
            String rawU = rawQ.replace(" ", "");
             String rawY = rawU.replace(",", "");
             
             StringBuilder form = new StringBuilder(rawY);
             StringBuilder formR = form.reverse();
             if (rawY.equals( formR.toString() )){
                 System.out.println("This is a palindrome!");
                }
                 
                else if (rawY.equals("end")){
                    System.out.println("Thank you and goodbye");
                }
                else { 
                    System.out.println("This is not a palindrome");
                }
            } while(!raw.equals("End"));
        }
        
    }
}