public class HelloWorld
{
    public static void main (String [] args)
    {
        KeyboardReader reader = new KeyboardReader();
        double x = reader.readDouble("Please enter in a number (decimals are o.k.): ");
        double y = reader.readDouble("Please enter in a second number (decimals are o.k.): ");
        System.out.println("\n" + x + " + " + y " = " + (x+y) +"\n" + x + " - " + y " = " + (x-y) + "\n" + x + " * " + y " = " + (x*y) + "\n" + x + " / " + y " = " + (x/y));
    }
}
