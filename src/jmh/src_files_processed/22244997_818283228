public class TextMessageV1
{
   public static void main(String[ ] args)
	{
	    String originalmessage = ("  hey it's nicolee. i have to go. talk to you later. see you soon.");
	    System.out.println("Original Message: ");
	    System.out.println(originalmessage);
	    int stringLength = originalmessage.length();
	    System.out.println("  message length: " + stringLength + " characters");
	    System.out.println();
	    
       
	    String oldString = (originalmessage.replace ("talk to you later", "ttyl"));;
	    int messagelength = oldString.length();
	    System.out.println("New Message: ");
	    System.out.println(oldString);
	    System.out.println("  message length: " + messagelength + " characters");
	    System.out.println();
	    
	    
	    System.out.println();
	    String substring = (4,3);
	    
	    
	}
}