    public boolean noNumberic (String string)
    {
        for (int count = 0; count < string.length(); count++)
        {
            System.out.println(string.charAt(count));
            if (string.charAt(count) >= '0' && string.charAt(count) <= '9')
            {
                return false;
            }
        }
        return true;
    }
    
