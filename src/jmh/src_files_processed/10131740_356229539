

public class sloth
{
    public sloth (String nIn, int sIn, Sting snIn,double hIn)
    {
      name  = nIn
      sleep = sIn
      snore = snIn
      height = hIn
    }    
    
    public String getName()
    {
      return name;   
    }
    
    public int getSleep()
    {
      return sleep   
    }
    
    public String getSnore()
    {
      return snore  
    }
    
    public double getHeight()
    {
      return height  
    }    
    
    private String name;
    private int sleep;
    private Sting snore;
    private double height;    
} 

