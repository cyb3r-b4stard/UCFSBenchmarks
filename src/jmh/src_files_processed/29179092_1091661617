import java.util.Scanner;
public class DebtPaymentProgram {
  public static void main(String[] args) 
  {
    Scanner reader = New Scanner(System.in);
    int debtId;
    String debtName;
    double interestRate;
    double debtBalance;
    double minimumPayment;
    double interest;
    double paymentAmount;
    double principalPaid;
    double interestPaid;
    double finalBalance;
    
    
    System.out.print ("Please enter the debt balance, interest rate, minimum payment, and disposable income (in that order)" );
    debtBalance= reader.nextDouble(System.in);
    interestRate= reader.nextDouble(System.in);
    minimumPayment= reader.nextDouble(System.in);
    disposableIncome = reader.nextDouble(System.in);
    
  }
}
