
import java.util.Scanner;
public class Gremlins
{
   public static void main (String[] args)
   {
      Scanner reader = new Scanner(System.in);
      String name;
      int mogwai, max = 5, min = 1;
      System.out.println("You are a scientist who studies animal behavior.");
      System.out.println("Late one night someone appears with a random creature, this creature is called a Mogwai.");
      System.out.println("");
      System.out.println("How many Mogwai did they give you?");
      mogwai = reader.nextInt();
      System.out.println("You accidently spill water on the Mogwai.");
      System.out.println("You look closely and " + (int) ((max - min + 1) * Math.random() + min)) + "Mogwai popout!";
      while (max < 5) {
          max += 1;
    }
   }
}