public class Libro
{
    private String autor;
    private String titulo;
    private int paginas;
    private String numeroDeReferencia; 
    private int prestado; 
    
    /**
     * Set the author and title fields when this object
     * is constructed.
     */
    public Libro(String autorDelLibro, String tituloDelLibro, int numeroDePaginas)
    {
        autor = autorDelLibro;
        titulo = tituloDelLibro;
        paginas = numeroDePaginas;
        numeroDeReferencia = "";
        prestado = 0;
    }
    
    
    public void setnumeroDeReferecia(String ref)
    {
        int ref1 = ref.length();   
        if (ref1>=3){
            numeroDeReferencia = ref;
        }else{
            System.out.println("Error. El numero de referencia es menor a 3");
            System.out.println("Proporcione otro valor de referencia");
    }
    
    
    public void prestarElLibro(int prestado)
    {
        prestado = prestado + 1;
    }
    
    
    public int getPrestado()
    {
        return prestado;
    }
    

       
    public String getAutor()
    {
        return autor;
    }
    
    
    public String getTitulo()
    {
        return titulo;
    }
    
    
    public int getnumeroDePaginas()
    {
        return paginas;
    }
    
    
    public String getnumeroDeReferencia()
    {
        return numeroDeReferencia;
    }
    

    
    public void imprimirAutor()
    {
        System.out.println ("El autor del libro es " + "'" + autor + "'.");
    }
    
    
    public void imprimirTitulo()
    {
        System.out.println ("El tÃ­tulo del libro es " + "'" + titulo + "'.");
    }
    
    
    public void imprimirnumeroDePaginas()
    {
        System.out.println("El numero de paginas del libro es " + paginas + ".");
    }
    
        
    
    public void imprimirDetallesDelLibro()
    {
        int x = numeroDeReferencia.length();
        System.out.println("El titulo del libro es          " + titulo);
        System.out.println("El autor del libro es           " + autor);
        System.out.println("El numero de paginas es         " + paginas); 
        if (x>0){
            System.out.println("El numero de referencia es  " + numeroDeReferencia);
        }else{
            System.out.println("El numero de referencia es  ZZCCV");
        }
        System.out.println("Este libro ha sido prestado     " + prestado + " veces");    
    }

}