package chapter_11;


import static java.lang.System.*; 
import java.util.Scanner;

public class TriangleOne
{

	public static String createTriangle( String let, int size)
	{
		String output="";
		
		String letter=let;
		int num=size;
		for(int i=1;i<=num;i++)
		{
		    for(int j=1;j<=i;j++)
		    {
		        output=output+letter+;
		    }
		    out.println();
		}
		
		
		
		
		return output;
	}
}