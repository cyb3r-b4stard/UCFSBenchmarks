import java.util.Scanner;
import java.util.Random;
public class MasterMind{
    public static void main(String[]args){
        Scanner tec = new Scanner (System.in);

        String clave = pedirClave();
        System.out.println(clave);

        System.out.println("Dame tu apuesta ");
        String apuesta = tec.next();

        int bien=aciertos (clave , apuesta);
        System.out.println (bien);

        int mal=descolocados(clave , apuesta);
        System.out.println (mal);
        /* 
        pedir clave
        do{
        pedir apuesta
        ver acertados
        ver descolocado
        } while (-----);
         */
    }

    public static String pedirClave(){
        Scanner tec = new Scanner (System.in);
        int op;
        do{
            System.out.println ("1. manual");
            System.out.println ("2. automatico");
            op=tec.nextInt();
        }while (op<1 || op>2);

        String clave ="";
        if (op == 1){
            System.out.println ("Dame la clave");
            clave = tec.next();
        }else{
            Random gen = new Random();
            for (int i=0 ; i<5 ; i++){
                int num=gen.nextInt(10);
                clave +=num;
            }
        } 
        return clave;
    }

    public static int aciertos (String clave , String apuesta) {
        int cont=0;
        for (int i=0 ; i<clave.length() ; i++){
            if (clave.charAt(i)==apuesta.charAt(i)){
                cont++;
            }
        }
        return cont;
    }

    public static int descolocados (String clave , String apuesta){
        int cont=0;
        for (int i=0 ; j<apuesta.length ; j++){
            if (clave.charAt(i)==apuesta.charAt(j) && i!=j){
                cont++;
            }
        }return cont;
    }

    public static int descolocados (String clave , String apuesta){
        int cont 0 =;
        for(int i=0); i<clave.length() ; i++){
            for(int j=0; j<apuesta.length(); j++){
                if(clave.charAt(i)==apuesta.charAt(j) && i!=j){
                    cont++;
                }
            }
        }
        return cont;
    }
}

                