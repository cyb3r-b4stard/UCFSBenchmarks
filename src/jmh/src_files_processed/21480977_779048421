import java.util.Scanner;
public class OddEvenwithExceptions{
public static void main(String[]args){
Scanner InputNum = new Scanner(System.in);

    
       int number;
    
       System.out.printf("Enter a number: ");
       number = InputNum.nextInt();
       
       if(number%2==1)
       {
           System.out.printf("The number you entered is an odd number.");
        }
        
        
        
       else if
       {
           System.out.printf("The number you entered is an even number.");
           
        }
        
        
       else
       {
           System.out.printf("The number you entered is not a number.");
        }
                
                
                
                
           
            
            
       
       
        
       
       
       
       
       
       
       
       
            
    



        System.exit(0);
    }
}
