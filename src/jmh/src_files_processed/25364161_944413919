import java.io.*;
class fo4
{   
    static void check (int a,int b,int c)
    {   double s=(a*b*c)/2;
        double peri=Math.sqrt(s*(s-a)*(s-b)*(s-c));
        System.out.println("area is "+peri);
    }

    static void check(String  r)
    { 
        int sum=0
        for(int j=0;j<r.length();j++)
        {
            char y=r.charAt(j);
            sum=sum+(int)(y);
        }

        System.out.println("sum of unicode is "+sum);

    }

    static void check(char c)
    { 
        if(Character.isLowercase(r))
            System.out.println("answer "+Character.toUppercase(r));
        else if(Character.isUppercase(r))
            System.out.println("answer "+Character.toLowercase(r));
    }

    public static void main(String args[])throws IOException
    {
        BufferedReader sc = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("enter an 1 for area of triangle 2 for palindrome");
        int ch=Integer.parseInt(sc.readLine());
        switch (ch)
        {
            case 1:
            System.out.println("enter a side");
            int n=Integer.parseInt(sc.readLine());
            System.out.println("enter a side");
            int o=Integer.parseInt(sc.readLine());
            System.out.println("enter a side.");
            int p=Integer.parseInt(sc.readLine());
            check(n,o,p);
            break;
            case 2:
            System.out.println("enter  a string ");
            String r=sc.readLine();
            check(r);
            break;
            case 3:
            System.out.println("enter  a character ");
            char c=sc.readLine().charAt(0);
            check(c);
            break;

            default:
            System.out.println("invalid");
        }

    }
}
