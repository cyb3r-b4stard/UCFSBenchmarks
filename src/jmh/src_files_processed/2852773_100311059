public class E5_9
{
    private String name = "Johnson";
    private double wage = 9.25;
    private double otWagePerc = 1.5;
    private double hours;
    private double otHours;
        
    public void hours(double amount)
    {
        hours = amount;
    }
    public double otHours()
    {
        if(hours > 40)
        {
            otHours = hours - 40;
            (wage * otWagePerc)*otHours;
        }
    }
}