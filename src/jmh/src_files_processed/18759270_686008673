import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.JLabel;
import java.awt.Color;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JOptionPane;
/**
 * ####### ##### ### ##### ####
 * 
 * @###### #### #######
 * @####### #.##.##
 */
public class PhonePanel extends JPanel{
    private JTextField input;
    private JLabel message;
    /**
     * Constructor
     */
    public PhonePanel(){
        setBackground(Color.BLUE);
        message = new JLabel("How many GB of data do you use each month?");
        input = new JTextField(5);
        input.addActionListener(new TextListener());
        add(message);
        add(input);
    }
    
    /**
     * Annonymous ActionListener
     */
    private class TextListener implements ActionListener{
        /**
         * Dialag Box appears when user presses Enter key
         */
        public void actionPerformed(ActionEvent event){
            try{int data = Integer.parseInt(input.getText());
            if(data>=0 && data<=1){
                JOptionPane.showMessageDialog(
                super(), 
                "Plan Price: $80.00", 
                "Best Phone Plan",
                JOptionPane.INFORMATION_MESSAGE);
            } else if(data<=10){
            } else if(data<=50){
            } else{
            }} catch(NumberFormatException nfException){
            }
        }
    }
}