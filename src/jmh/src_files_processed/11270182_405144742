public class Annuity
{
   public static void main(String[] args) {
       
        Scanner in = new Scanner(System.in);
        int PMT = in.nextInt();
        int n = in.nextInt();
        int i = in.nextInt();
        double interestrate = (.08);
        double beginningBalance= 0;
        double monthlyaddition= 500;
        System.out.println("Periodic payment amount: " + PMT);
   
    public void getAnnuity()
    {
        annuity = PMT *  ((Math.pow(1 + i, n- 1) - 1 )) / i;
        totalAnnuity= annuity / ((Math.pow(1 + i, n - 1) + 1));
        return annuity;
    }
}