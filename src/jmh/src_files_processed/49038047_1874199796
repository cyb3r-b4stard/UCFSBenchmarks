import java.util.Scanner;
public class Demo
{
    public static void main(String[] args)
    {
        System.out.println("Enter number\n";
        Scanner s = new Scanner(System.in);
        int i = s.nextInt();
        for(int x = 0; x < i; x++)
        {
            for(int y = x; y > x; y--)
                System.out.print(" ");
            for(int z = 0; z <= x; z++)
                System.out.print("@");
            System.out.println();
        }
    }
}