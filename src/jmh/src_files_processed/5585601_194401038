import java.util.*;

public class SolutionA
{
    public static void main(String args[]){
        Scanner input = new Scanner(System.in);
        Random generator = new Random();
        int randomNumber = generator.nextInt(10);
        int Random1 = randomNumber + 10;
        System.out.println(Random1);
        System.out.println("Guess the random number between 10 and 20: ");
        int guess = input.nextInt();
        while(guess < 10 || guess > 20){
            System.out.print("Guess a number between 10 and 20: ");
            guess = input.nextInt();
        }
        if(guess = Random1){
            System.out.print("You win!");
            System.exit(0);
        } else if(guess = RandomInt - 1 || guess = RandomInt - 2 || guess = RandomInt + 1 ||guess = RandomInt + 2){
            System.out.print("You were close");
            System.exit(0);
        } else{
            System.out.print("You lose");
            System.exit(0);
        }
        
        
}
}
