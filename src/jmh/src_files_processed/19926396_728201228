public class Usuario
{
    private String rut;
    private String nombre;
    private int edad;
    private int telefono;
    private int valorMensual;

    public Usuario(){
        rut = "";
        nombre = "";
        edad = 0;
        telefono = 0;
        valorMensual = 0;
    }

    public Usuario(String rut, String nombre, int edad, int telefono, int valorMensual){
        this.rut = rut;
        setNombre(nombre);
        this.edad = edad;
        this.telefono = telefono;
        this.valorMensual = valorMensual;
    }

    public String getRut(){
        return rut;
    }

    public String getNombre(){
        return nombre;
    }

    public int getEdad(){
        return edad;
    }

    public int getTelefono(){
        return telefono;
    }

    public int getValorMensual(){
        return valorMensual;
    }

    public void setRut(String rut){
        this.rut = rut;  
    }

    public void setNombre(String nombre){
        nombre = nombre.trim();
        this.nombre = nombre;  
    }

    public void setEdad(int edad){
        this.edad = edad;  
    }

    public void setTelefono(int telefono){
        this.telefono = telefono;  
    }

    public void setValorMensual(int valorMensual){
        this.valorMensual = valorMensual;  
    }

    public void printUsuario(){
        System.out.println("Rut : " + rut); 
        System.out.println("Nombre : " + nombre); 
        System.out.println("Edad : " + edad); 
        System.out.println("Telefono : " + telefono); 
        System.out.println("ValorMensual : " + valorMensual); 
    }

    public boolean validarFicha(int nuevoNumero, String nuevoRut){
        ambulancia.getNumero();
        if(numero == nuevoNumero && rut = nuevoRut){
            System.out.println("Su ficha es valida");
        }else{
            System.out.println("Su ficha es invalida");  
        }
    }
    
    public void obtenerDescuento(double porcentaje){
        
    }

}