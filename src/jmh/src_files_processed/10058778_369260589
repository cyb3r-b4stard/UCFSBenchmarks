import java.util.Scanner;

public class DONG
{
    public static void main(String[] args)
    {
        int 컴퓨터, 이산수학, 프로그래밍, 영작문;

        영작문 = 88;
        프로그래밍 =92;
        이산수학 = 79;
        컴퓨터 = 80;
        System.out.println("영작문 과목의 점수:\t" + 영작문);
        System.out.println("프로그래밍 과목의 점수:\t" + 프로그래밍);
        System.out.println("이산수학 과목의 점수:\t" + 이산수학);
        System.out.println("컴퓨터 과목의 점수:\t" + 컴퓨터);
        System.out.println("평균 점수:\t"+0.2영작문+ 프로그래밍+이산수학+컴퓨터/2);
        
        
        

    }
}