/**
    #### ##### ## ### ### #####
*/
public class Store
{
    private Product product1;
    private Product product2;
    private Product product3;
    public Store()
    {
        product1 = null;
        product2 = null;
        product3 = null;
    }
    public void addProduct(String name, double unit, double selling, double demand, double setup, double inventory)
    {    
       if (product1 == null)
       {
           product1 = new Product();
           product1.setName(name);
           product1.setUnitCost(unit);
           product1.setSellingPrice(selling);
           product1.setDemandRate(demand);
           product1.setSetupCost(setup);
           product1.setInventoryCost(inventory);
       }
       else if (product2 == null)
       {
           product2 = new Product();
           product2.setName(name);
           product2.setUnitCost(unit);
           product2.setSellingPrice(selling);
           product2.setDemandRate(demand);
           product2.setSetupCost(setup);
           product2.setInventoryCost(inventory);
       }
       else if (product2 == null)
       { 
           product3 = new Product();
           product3.setName(name);
           product3.setUnitCost(unit);
           product3.setSellingPrice(selling);
           product3.setDemandRate(demand);
           product3.setSetupCost(setup);
           product3.setInventoryCost(inventory);
       }
    }  
    public boolean checkfull()
    {
       return product1 != null && product2 != null && product3 != null; 
    }
    
    public boolean storeEmpty()
    {
        return product1 == null && product2 == null && product3 == null;
    }
    public boolean checkExists(String name)
    {
        if (product1 != null)
        {
            if(name.equals(product1.getName()))
            {
                return true;
            }
        }
        if (product2 != null)
        {
            if(name.equals(product2.getName()))
            {
                return true;
            }
        }
        if (product3 != null)
        {
            if(name.equals(product3.getName()))
            {
                return true;
            }
        }
        return false;
    }
    
    
    public void removeProduct(String removeName)
    {
        if (removeName.equals(product1.getName()))
        {
            product1 = null;
        }
        else if (removeName.equals(product2.getName()))
        {
            product2 = null;
        }
        else if (removeName.equals(product3.getName()))
        {
            product3 = null;
        }
    }
    public void changeName(String newName)
    {
        if (newName.equals(product1.getName()))
        {
            product1.setName(newName);
        }
        if (newName.equals(product2.getName()))
        {
            product2.setName(newName);
        }
        if (newName.equals(product3.getName()))
        {
            product3.setName(newName);
        }
    }
    public void changeUnitCost(double newUnitCost)
    {
        if (newUnitCost == product1.getUnitCost())
        {
            product1.setUnitCost(newUnitCost);
        }
        if (newUnitCost == product2.getUnitCost())
        {
            product2.setUnitCost(newUnitCost);
        }
        if (newUnitCost == product3.getUnitCost())
        {
            product3.setUnitCost(newUnitCost);
        }
    }
    public void changeSellingPrice(double newSellingPrice)
    {
        if (newSellingPrice == product1.getSellingPrice())
        {
            product1.setSellingPrice(newSellingPrice);
        }
        if (newSellingPrice == product2.getSellingPrice())
        {
            product2.setSellingPrice(newSellingPrice);
        }
        if (newSellingPrice == product3.getSellingPrice())
        {
            product3.setSellingPrice(newSellingPrice);
        }
    }
    public void changeDemandRate(double newDemandRate)
    {
        if (newDemandRate == product1.getDemandRate())
        {
            product1.setDemandRate(newDemandRate);
        }
        if (newDemandRate == product2.getDemandRate())
        {
            product2.setDemandRate(newDemandRate);
        }
        if (newDemandRate == product3.getDemandRate())
        {
            product3.setDemandRate(newDemandRate);
        }
    }
    public void changeSetupCost(double newSetupCost)
    {
        if (newSetupCost == product1.getSetupCost())
        {
            product1.setSetupCost(newSetupCost);
        }
        if (newSetupCost == product2.getSetupCost())
        {
            product2.setSetupCost(newSetupCost);
        }
        if (newSetupCost == product3.getSetupCost())
        {
            product3.setSetupCost(newSetupCost);
        }
    }
    public void changeInventoryCost(double newInventoryCost)
    {
        if (newInventoryCost == product1.getInventoryCost())
        {
            product1.setInventoryCost(newInventoryCost);
        }
        if (newInventoryCost == product2.getInventoryCost())
        {
            product2.setInventoryCost(newInventoryCost);
        }
        if (newInventoryCost == product3.getInventoryCost())
        {
            product3.setInventoryCost(newInventoryCost);
        }
    }
    
    public String displayProduct(String name)
    {
        if (product1 != null)
        {
            if (name.equals(product1.getName()))
            {
                return product1.getDetails();
            }
        }
        else if (product2 != null)
        {
            if (name.equals(product2.getName()))
            {
                return product2.getDetails();
            }
        }
        else if (product3 != null)
        {
            if (name.equals(product3.getName()))
            {
                return product3.getDetails();
            }
        }
        else return ("Error: Product does not exist.";)
    }
    
    public int orderQuantity(String name, int weeks)
    {
        if (product1 != null)
        {
            if (name.equals(product1.getName()))
            {
                return (int)Math.round(Math.sqrt((2 * (product1.getSetupCost() * (product1.getDemandRate() * weeks))/(product1.getInventoryCost() * product1.getUnitCost() * weeks))));
            }
        }
        if (product2 != null)
        {
            if (name.equals(product2.getName()))
            {
                return (int)Math.round(Math.sqrt((2 * (product2.getSetupCost() * (product2.getDemandRate() * weeks))/(product2.getInventoryCost() * product2.getUnitCost() * weeks))));
            }
        }
        if (product3 != null)
        {
            if (name.equals(product3.getName()))
            {
                return (int)Math.round(Math.sqrt((2 * (product3.getSetupCost() * (product3.getDemandRate() * weeks))/(product3.getInventoryCost() * product3.getUnitCost() * weeks))));
            }
        }
    }
    
  
    
}