import java.util.*;
public class roomAreaMultiMethod
{
    public static void main(String[]args)
    {
        double dim1 = 0.0;
        double dim2 = 0.0;
        double area = 0.0;
        dim1 = recDims();
        dim2 = recDims();
        area = calcAr(dim1, dim2);
        System.out.println(dim1 + "X" + dim2 + " = " + area);
        System.Exit;
    }
    public static double recDims()
    {
        Scanner in = new Scanner(System.in);
        double d = 0.0;
        System.out.print("Enter a dimension of the room: ");
        d = in.nextDouble();
        return d;
    }
    public static double calcAr(double d1, double d2)
    {
        double a = d1 * d2;
        return a;
    }
}
        