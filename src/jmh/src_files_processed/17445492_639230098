import java.util.Scanner;
public class exercicio3{
    
  public static  void  main(String args[]){
        Scanner in = new Scanner(System.in);
        System.out.println("Digite um numero de 4 digitos");
        int numero = in.nextInt();
        
        if ( numero > 999 && numero < 10000){
            int valor = )((numero / 100) + (numero % 1000 % 100)) * ((numero / 100) + (numero % 1000 % 100));
           
             if ( valor == numero){
             System.out.println(" seu numero tem a mesma caracteristica que 3025!!");
             
            } else {
                 System.out.println("seu numero não tem a mesma caracteristica de 3025!!");
            }
        
        }else{
            System.out.println("seu numero não tem 4 digitos");
        }
             
    }
}