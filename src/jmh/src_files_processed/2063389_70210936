import java.util.Scanner;
import java.util.Random;
public class SlotMachine
{
    public static void main(String[]args)
    {
        Scanner input = new Scanner(System.in);
        int a = 120;
        int b = 120;
        int c = 120;
        while(String option.equalsIgnoreCase("yes"))
        {
            System.out.println("How much money would you like to put in?:");
            int coin = input.nextInt();
            if (coin == 1 || coin == 5 || coin == 10 || coin == 25 || coin == 100)
            {
                for(int count = 0; count < 3; count++)
                {
                    int output = (int)(Math.random() * 6);

                    if (count == 0)
                    {
                        a = output;
                    }

                    if (count== 1)
                    {
                        b = output;
                    }

                    if (count == 2)
                    {
                        c = output;
                    }

                    switch (output)
                    {                
                        case 0:
                        System.out.print("Cherry ");
                        break;

                        case 1:
                        System.out.print("Moon ");
                        break;

                        case 2:
                        System.out.print("Bell ");
                        break;

                        case 3:
                        System.out.print("Horseshoe ");
                        break;

                        case 4:
                        System.out.print("Clover ");
                        break;

                        case 5:
                        System.out.print("Gold Bar ");
                        break;

                        default:
                        System.out.print("= = =");
                        break;
                    }
                }
                if (a == b && a == c)
                {
                    System.out.println("\n 3 Match!");
                    System.out.print(" You have won " + 4 * coin + "!");
                }

                else if (a == b && !(a == c) || (b == c && !(a == c))
                || (a == c) && !(a == b))
                {
                    System.out.println("\n 2 Match!");
                    System.out.print(" You have won " + 2 * coin + "!");
                }

                else if (a == 3 && b == 3 && c == 3)
                {
                    System.out.print("JACKPOT!!");   
                    int coinValue = (int)(Math.random() * 1000) + 11;
                    System.out.println("You have won" + coinValue * coin + "!");
                }
                else
                {
                    System.out.print("You have won $0! I hope you regret your life of gambling.");
                }

            }

            else 
            {
                System.out.print(" Any change under a dollar please");
            }
            System.out.print("\n Would you like to play again?");
            String option = input.nextLine();
        }
    }
}