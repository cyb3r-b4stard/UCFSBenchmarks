
public class StaticUtilities
{
    public static boolean isPalindrome(String input)
    {
        input = keepNotJunk(input);
        return input.equals(reverseString(input));
    }

    private static String keepNotJunk(String input1)
    {
        String toReturn = "";
        for ( int i = 0; i<input1.length(); i++)
        {
            if (Character.isLetter(input1.charAt(i)))
                toReturn += input1.charAt(i) + "";
        }
        input = toReturn
        return input;
    }

    private static String reverseString(String input2)
    {
        String myReturn = "";
        for( int i = input2.length()-1; i >= 0; i--)
            toReturn += input2.charAt(i) + "";
        return myReturn;
    }
}
