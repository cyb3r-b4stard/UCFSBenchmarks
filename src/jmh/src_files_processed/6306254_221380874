
public class Konto
{
    String ktoInhaber;
    int ktoNummer;
    double ktoStand;
    /**
     * Konstruktor
     */
    public Konto(int kontoNummer,String kontoInhaber)
    {
        ktoNummer = kontoNummer;
        ktoInhaber = kontoInhaber;
    }
    
    public void getKontoStand()
    {
        System.out.println("-_-_- Kontoinhaber: "+ktoInhaber+" -_-_-_- KontoNummer: "+ktoNummer);
        System.out.println();
        DateFormat dateFormat = new SimpleDateFormat("yyyyMMdd");
   Date date = new Date();
   System.out.println(dateFormat.format(date));

DateFormat timeFormat = new SimpleDateFormat("HHmmss");
   Date d=new Date();
   System.out.println(timeFormat.format(d);
        System.out.println("Ihr aktueller Kontostand beträgt "+ktoStand+"€.");
    }
    
    public void einzahlen(double einzahlung)
    {
        ktoStand = ktoStand+einzahlung;
    }
    
    public void abheben(double abhebung)
    {
        ktoStand = ktoStand+abhebung;
    }
    
}