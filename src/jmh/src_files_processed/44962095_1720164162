
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### ##### ###### 
 * @####### ######## ####, ####
 */
public class Basics4
{
    public String formatAddress ( String lastName , String firstName, String streetAddress, String city, String state, String zip )
{
    String address = firstName + " " + lastName+"\n"+ streetAddress+"\n"+ city + " " + state, + " " + zip;
  
    /*
    Print the formatted address
    For example, when showAddress ("Joe","Smith","2 Main St.","Eastchester","NY","10709"); is called, 
    The following should be returned:
    Joe Smith
    2 Main St.
    Eastchester, NY 10709

    Be sure to include appropriate newlines and spaces.
    */


    return address;
}
}