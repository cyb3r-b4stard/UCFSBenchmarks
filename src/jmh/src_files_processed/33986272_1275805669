 */
public class Arma
{
  private String nombre;
  private int precio;
  private int nivelMinimo;
  private char claseDeEquipamiento;
  
  public Arma()
  {
  }
  
  public Arma(String nombre,int precio,int nivelMinimo,claseDeEquipamiento)
  {
      this.nombre=nombre;
      this.precio=precio;
      this.nivelMinimo=nivelMinimo;
      this.claseDeEquipamiento;
    }
    
  public String getNombre()
  {
      return nombre;
    }
    
  public void setNombre(String nombre)
  {
      this.nombre=nombre;
    }
    
  public int getPrecio()
  {
      return precio;
    }
    
    public void setPrecio(int precio)
  {
      this.precio=precio;
    }
    
  public int getNivelMinimo()
  {
      return nivelMinimo;
    }
    
  public void setNivelMinimo(int nivelMinimo)
  {
      this.nivelMinimo=nivelMinimo;
    }
   
    public void imprimir()
   {
       System.out.println("El nombre del arma es  "+ nombre);
       System.out.println("EL precio del arma es "+ precio);
       System.out.println("El nivel minimo es "+ nivelMinimo);
     
       
    }
    
}