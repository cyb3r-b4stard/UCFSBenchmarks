
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Student implements Comparable<Object> 
{
    
    private String n;
    private String s;
    
    /**
     * @ pre: n & s != null
     * @ post: crée un étudiant avec un nom et un prénom
     */
    public Student(String n, String s)
    {
        this.s=s;
        this.n=n;
    }
    
    public String getSirname()
    {
        return this.s; 
    }
    
    public String getName()
    {
        return this.n;
    }
    
    public boolean equals(Object o)
    {
        if(o instanceof Student && o!=null)
        {
            Student o1=(Student)o;
            return(this.n.equals(o1.getName())&&this.s.equals(o1.getSirname()));
        }
        else
        {
            return false;
        }
    }
    
    public int compareTo(Object o)
    {
        Student o1=(Student) o;
        if(this.n.equals(o1.getName())
        {
            return(this.s.compareTo(o1.getSirname));
        }
        else
        {
            return(this.n.compareTo(o1.getName));
        }
    }
}