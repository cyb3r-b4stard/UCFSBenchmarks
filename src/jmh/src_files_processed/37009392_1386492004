import java.applet.Applet;
import java.awt.*;
import javax.swing.*;
import java.util.*;
public class Snowman extends Applet    
{
    
    private int x1, x2, y1, y2;

        String name1, name2;
        String xcoordinate1, xcoordinate2, ycoordinate1, ycoordinate2;
        String initial1, initial2;

    
    
    public void init()
    {
        
        name1 = JOptionPane.showInputDialog("What is your first name? ");
        name2 = JOptionPane.showInputDialog("What is your last name? ");
        xcoordinate1 = JOptionPane.showInputDialog("What is the first x coordinate? ");
        ycoordinate1 = JOptionPane.showInputDialog("What is the first y coordinate? ");
        xcoordinate2 = JOptionPane.showInputDialog("What is the second x coordinate? ");
        ycoordinate2 = JOptionPane.showInputDialog("What is the second y coordinate? ");
        
        x1 = Integer.parseInt(xcoordinate1);
        x2 = Integer.parseInt(xcoordinate2);
        y1 = Integer.parseInt(ycoordinate1);
        y2 = Integer.parseInt(ycoordinate2);
        
        initial1 = name1.substring(0,1);
        initial2 = name2.substring(0,1);
        initial1 = initial1.toUpperCase();
        initial2 = initial2.toUpperCase();
        
        double distForm, dx, dy;
        dy = y2 - y1;
        distForm = 
        
        
    }
    
    
    public void paint(Graphics page)  
    {
        
        final int MID=150;   
        final int TOP = 50;  

        Color c = new Color(0,0,200);  
        
        Font myFont;
        myFont = new Font("Comic sans ms", Font.BOLD, 14);
        
        
        page.setColor(Color.white);
        page.setFont(myFont);
        page.drawString("Hello " + initial1 + initial2, 50, 50);
        
        page.drawString("Distance from (" + x1 +"," + y1, 60, 40);
        
        
        super.setBackground(c);  
        super.resize(300,225);  

        page.setColor(Color.yellow);  
        page.fillOval(-40,-40,80,80);   

        page.setColor(Color.blue);
        page.fillRect(0,175,300,50);  

        page.setColor(Color.white);
        page.fillOval(MID-20,TOP,40,40);   
        page.fillOval(MID-35,TOP+35,70,50); 
        page.fillOval(MID-50, TOP+80,100,60);  

        page.setColor(Color.black);
        page.fillOval(MID-10, TOP+10,5,5);  
        page.fillOval(MID+5, TOP+10, 5, 5);   

        page.drawArc(MID-10, TOP+20, 20, 10, 190, 160);   

        page.drawLine(MID-25, TOP+60, MID-50, TOP+40);    
        page.drawLine(MID+25, TOP+60, MID+55, TOP+60);   

        page.drawLine(MID-20, TOP+5, MID+20, TOP+5);  
        page.fillRect(MID-15, TOP-20, 30, 25);     


    }
}