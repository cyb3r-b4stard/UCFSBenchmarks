
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Pattern
{
  public static void main(String args[])
{

int n=5;

char ch='A';
char c;
for(int i=1;i<=n;++i)        
{
c=ch;
for(int j=i;j<n;j++)        
{
System.out.print(" ");
}
for(int k=1;k<=i;k++)      
{
System.out.print(c);
c--;
}
c+=2
for(int l=1;l<i;++l)      
{
System.out.print(c);
c++;
}
System.out.println();    
ch++;                   
}
}
}
