import java.util.Random;
import java.util.Scanner;
public class NameGenerator
{
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
        System.out.println("Welcome to the username and password generator! ");
        System.out.println("Please enter your first name: ");
        String firstname = input.nextLine();
        System.out.println("Please enter your last name: ");
        String lastname = input.nextLine();
        System.out.println("Please enter your favorite word: ");
        String favWord = input.nextLine();
        Random generator = new Random();
        int num1 = generator.nextInt(100);
        String lastname22 = lastname;
        if (lastname.length() < 7)
        {
            lastname22+= "*******";
        }
        System.out.println("Thanks " + firstname + " your user name is " + String.valueOf(firstname.charAt(0)).toLowerCase() + String.valueOf(lastname22.substring(0,7)).toLowerCase() + num1);
        String firstname1 = firstname.replace("a", "@");
        firstname1 = firstname1.replace("o", "0");
        firstname1 = firstname1.replace("s", "$");
        firstname1 = firstname1.replace("i", "1");
        String lastname1 = lastname.replace("a", "@");
        lastname1 = lastname1.replace("o", "0");
        lastname1 = lastname1.replace("s", "$");
        lastname1 = lastname1.replace("i", "1");
        int num2 = generator.nextInt(100);
        System.out.println("Password 1: " + firstname1 + num2 + lastname1);
        String password2 = String.valueOf(firstname.substring(0,1)).toLowerCase() + firstname.substring(firstname.length() - 1).toUpperCase() + lastname.substring(0,1).toLowerCase() + lastname.substring(lastname.length() - 1).toUpperCase() + favWord.substring(0,1).toLowerCase() + favWord.substring(favWord.length() - 1).toUpperCase();
        System.out.println("Password 2: " + password2 );
       
        
        
        
        int firstname length = firstname.length() + 1;
        
        System.out.println("Password 3: " + password3);
        
    }
