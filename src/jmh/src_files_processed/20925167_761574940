import java.io.*;

class WriteTextFile
{
     public static void main ( string[] args) throws IOException
     {
         string FileName = "reaper.txt";
         
         fileWriter writer = newFileWriter(FileName)
         writer.write("Yeay!!! i have learnt file IO,\n");
         writer.write("ha ha!!!\n");
         writer.write("reaping and singing by herself;\n");
         writer.write("stop here, or gently pass!\n");
         
         writer.close();
     }
}