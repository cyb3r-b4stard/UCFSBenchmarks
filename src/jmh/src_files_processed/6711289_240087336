import kareltherobot.*;
import java.awt.Color;

public class Problem4 implements Directions
{
    public static void main(String args[])  {
        Problem4Methods karel = new Problem4Methods(2, 3, North, 50);  
        karel.turnRight();
        karel.plantAlot(6);
        karel.turnLeft();
        karel.plantAlot(7);
        karel.turnLeft();
        karel.plantAlot(7);
        karel.turnLeft();
        karel.plantAlot(7):
        karel.turnLeft();
        karel.plantAlot(1);
        
        
    } 

    static {
        World.reset(); 
        World.readWorld("fig3-9.kwld"); 
        World.setBeeperColor(Color.magenta);
        World.setStreetColor(Color.blue);
        World.setNeutroniumColor(Color.green.darker());
        World.setDelay(10);  
        World.setVisible(true);
    }
}