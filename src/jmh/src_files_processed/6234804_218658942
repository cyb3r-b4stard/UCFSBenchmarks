import info.gridworld.grid.*;
public class Building
{
    protected Location loc;
    protected Grid<Building> grid;
    protected int[] resources;
    public Building()
    {
    }

    public void act()
    {
    }

    public void putSelfInGrid(Grid<Building> gr, Location loc)
    {
        grid = gr;
        this.loc = loc;
    }

    public void destroyBuilding()
    {
        grid.remove(loc);
        grid = null;
        loc = null;
    }
    
    public void BuildHarvester()
    {
        if(CityWorld.resources[2] > 15 && CityWorld.resources[3] > 5)
        {
            location tempLoc = loc;
            grid tempGrid = grid;
            destroyBuilding();
            new Harvester().putSelfInGrid(tempGrid, tempLoc)
        }
    }
    
    public void BuildHouse()
    {
    }
    
    public void BuildFarm()
    {
    }
    
    public void BuildMine()
    {
    }
    
    public void BuildLoggingHouse()
    {
    }
}