package nz.ac.aut.programming1.homework3;

import static nz.ac.aut.programming1.homework3.Methods.*;

public class Q6 {

    void partA() {
        
        if (isSpaceInFrontOfRobotClear()){
            while (isSpaceInFrontOfRobotClear();){
                turnRobotLeft();
                    if (isSpaceInFrontOfRobotClear()){
                    moveRobotForwards();
                    moveRobotForwards();
                    else{
                        turnRobotLeft();
                        turnRobotLeft();
                        if(isSpaceInFrontOfRobotClear()) {
                        moveRobotForwards();
                        moveRobotForwards();
                    }
                        turnRobotLeft();
                    }
                    
                }
            }
        }
    }

    void partB() {
        
        while (isSpaceInFrontOfRobotClear()){
        turnRobotLeft();
        if (isSpaceInFrontOfRobotClear()) {
                moveRobotForwards();
            }
            else {
                turnRobotLeft();
                turnRobotLeft();
                turnRobotLeft();
            }
        moveRobotForwards();
    }
        
    }

    void partC() {
        

    }
}