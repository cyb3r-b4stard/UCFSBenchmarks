 * 
 * @###### ####### #########
 * @####### # ### ####
 */
public class ClubRules
{
    private int minimumAge;
    private int maximumAge;
    private int age
   
    /**
     * Initialise a new ClubRules object.
     * @param minimumAge    The minumum age for club members.
     * @param maximumAge    The maximum age for club members.
     */
    public ClubRules(int minimumAge, int maximumAge)
    {
        this.minimumAge=minimumAge;
        this.maximumAge=maximumAge;


    }
    
    /**
     * Check if someone is eligible to join the club and print an
     * appropriate message.
     * @param age   The age of the person wishing to join.
     */
    public void checkIfEligible(int age)
    {
       if (age>=minimumAge && age <= maximumAge){
          
           System.out.println("Yes! You are welcome to join our club.");
        }
       else{
            System.out.println("No, sorry:");
        
            if(age>maximumAge){
                System.out.println(" + is too old for our club. ");
            }
            else{
                System.out.println(" ("return minimumAge")+ is too young for our club."); 
            }
            }
        }
        
    
    
    /**
     * The minimum age for members of this club.
     */
    
    public int getminimumAge()
    {
    
        return minimumAge;
    }
    
    /**
     * The maximum age for members of this club.
     */
    public int getmaximumAmge()
    {
        return maximumAge;
    }
}