import java.io.*;
class employee
{
    long pan;
    String name;
    double tax,taxincome;
    int x;
    InputStreamReader isr= new InputStreamReader(System.in);
    BufferedReader br= new BufferedReader(isr);

    public void input()throws IOExecption 
    {
        System.out.println("enter the pan");
        pan= long.parselong(br.readLine());
        System.out.println("enter the name");
        name=br.readLine();
        System.out.println("enter the taxincome");
        taxincome=Double.parseDouble(br.readLine());
    }
    public void calc()
    {
        System.out.println("the tax is:");
        if(taxincome<=100000)
        {
            System.out.println("tax is 0");
        }
        else if (taxincome>100000 && taxincome<=150000)
        {

            tax=(taxincome-100000)*0.1;
        }
        else if (taxincome>150000 && taxincome<=250000)
        {
            tax=(taxincome-150000)*0.2 +5000; 
        }
        else if(taxincome>250000)
        {
            tax=(taxincome-250000)*0.3 +25000; 
        }
    }

    public void display()
    {
        System.out.print("PAN NUMBER/tNAME/tTAXABLE INCOME/tTAX");
        System.out.print(pan+"/t"+name+"/t"+taxincome+"/t"+tax);
    }
}
