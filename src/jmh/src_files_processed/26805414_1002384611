
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (##### ######) 
 * @####### (##/##/####)
 */
import java.util.ArrayList;

public class Student
{
    
    private int id;
    private String firstName;
    private String lastName;
    private String email;
    private int age;
    private int[] grades = new int[3];
    
    
    private static ArrayList<Student> students = new ArrayList<Student>();
    
    /* Input 
     * String [] students = {"1,John,Smith,John1989@gmail.com,20,88,79,59", 
             "2,Suzan,Erickson,Erickson_1990@gmailcom,19,91,72,85",
             "3,Jack,Napoli,The_lawyer99yahoo.com,19,85,84,87",
             "4,Erin,Black,Erin.black@comcast.net,22,91,98,82",
             "5,Bryan,Nelson,bnels21@wgu.edu,37,97,98,99"};
     */

    /**
     * Constructor for objects of class Student
     */
    public Student(int id, String firstName, String lastName, String email, int age, int grade0, int grade1, int grade2)
    {
        this.id = id;
        this.firstName = firstName;
        this.lastName = lastName;
        this.email = email;
        this.age = age;
        this.grades[0] = grade0;
        this.grades[1] = grade1;
        this.grades[2] = grade2;
    }

    /**
    *loadStudent(String student)
    *@param String student takes a string formatted
    *"int id, String firstName, String lastName, String email, int age, int grade0, int grade1, int grade2"
    *
    */
    public static void loadStudent(String student)
    {
        String[] input = student.split(",", -1); 
        int id = Integer.parseInt(input[0]);
        String firstName = input[1];
        String lastName = input[2];
        String email = input[3];
        int age = Integer.parseInt(input[4]);
        int grade0 = Integer.parseInt(input[5]);
        int grade1 = Integer.parseInt(input[6]);
        int grade2 = Integer.parseInt(input[7]);

        students.add(new Student(id, firstName, lastName, email, age, grade0, grade1, grade2));
    }       

    /**
     * student.getId() returns id
     * @return     the value of id 
     */
    public int getId()
    {
        return id;
    }
    
    /**
     * student.setId(int id) assigns id to student object
     * @param  id  takes int id
     */
    public void setId(int id)
    {
        this.id = id;
    }
    
    /**
     * student.getFirstName() gets first name of student
     * @return     the value of firstName
     */
    public String getFirstName()
    {
        return firstName;
    }
    
    /**
     * student.setFirstName() assigns firstName
     * @param  firstName   takes String firstName
     */
    public void setFirstName(String firstName)
    {
        this.firstName = firstName;
    }
    
    /**
     * student.getLastName() last name of student
     * @return     the value of lastName
     */
    public String getLastName()
    {
        return lastName;
    }
    
    /**
     * student.setLastName() assigns student last name
     * @param  lastName   takes String lastName
     */
    public void setLastName(String lastName)
    {
        this.lastName = lastName;
    }
    
    /**
     * student.getEmail()  gets student email address
     * @return the value of email
     */
    public String getEmail()
    {
        return email;
    }
    
    /**
     * student.setEmail(String email) assigns email address to student
     * @param email takes String email
     */
    public void setEmail(String email)
    {
        this.email = email;
    }
    
    /**
     * student.getAge() gets student age
     * @return the value of age
     */
    public int getAge()
    {
        return age;
    }
    
    /**
     * student.setAge(int age) assigns student age
     * @param age takes student age as integer
     */
    public void setAge(int age)
    {
        this.age = age;
    }
    
    /**
     * student getGrades() gets array of student grades as String
     * @return values in grades array
     */
    public String getGrades()
    {
        String gradesString = "{" + grades[0];
        for (int i = 1; i < grades.length; i++)
        {
            gradesString = gradesString + ", " + grades[i];
        }
        gradesString = gradesString + "}";
        
        return gradesString;
        
    }
    
    /**
     * student setGrades(int grade0, int grade1, int grade2) assigns grades to student
     * @param int grade0 
     * @param int grade1
     * @param int grade2
     */
    public void setGrades(int grade0, int grade1, int grade2)
    {
        this.grades[0] = grade0;
        this.grades[1] = grade1;
        this.grades[2] = grade2;
    }
    
    public static void main(String[] args)
    {
    
        String[] inputStrings = {"1,John,Smith,John1989@gmail.com,20,88,79,59", 
             "2,Suzan,Erickson,Erickson_1990@gmailcom,19,91,72,85",
             "3,Jack,Napoli,The_lawyer99yahoo.com,19,85,84,87",
             "4,Erin,Black,Erin.black@comcast.net,22,91,98,82",
             "5,Bryan,Nelson,bnels21@wgu.edu,37,97,98,99"};
             
        for (String in : inputStrings)
        {
            loadStudent(in);
        }
        
        for (Student student : students)
        {
            System.out.print(student.getId() + ", " +
                student.getFirstName() + ", " +
                student.getLastName() + ", " +
                student.getEmail() + ", " +
                student.getAge() + ", " +
                student.getGrades());
            System.out.println("");
            
            
            
            
            )
        }
             
        
    }
}