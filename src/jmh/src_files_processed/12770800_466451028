
public class fivepointtwentyfour
{
   public static void main(String args[]){
       int x, y, z;
       for ( x = 1; x <= 9; x += 2){
           for ( y = (9 - x) / 2; y > 0; y--){
               System.out.print(" ");
            }
            
            for ( z = 1; z <= x; z++){
                System.out.print("*");
            }
            System.put.println(" ");
        }
        
            
       for ( x = 7; x >= 0; x -= 2){
           for ( y = (9 - x) / 2; y > 0; y--){
               System.out.print(" ");
            }
            for ( z = 1; z <= x; z++){
                System.out.print("*");
            }
            System.out.println(" ");
        }
        
       System.out.print("*");
    }
    System.out.print(" ");
    return 0;
}
            
            
