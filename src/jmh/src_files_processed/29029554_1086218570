    public static String convertName(String[] name)
    {
       
       ArrayList<String> formattedNames = new ArrayList<String>();
       for(int g = 0; g < name.length; g++)
       {
           String lastname = name[g];
           char FirstInitial = name[g].charAt(name[g].length()-1);
           char MiddleInitial = name[g].charAt(name[g].legth()-2)
           
           formattedNames.add(i,FirstInitial.toUpperCase() + " " + MiddleInitial.toUpperCase() + " " +lastname)
        }
