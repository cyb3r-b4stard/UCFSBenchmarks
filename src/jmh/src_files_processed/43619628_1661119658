
class KONZENTRIK
{
    KREIS[] konzkreis;
    KONZENTRIK ()
    {
        konzkreis = new KREIS [40];
        for (int z = 0; z <= 39; z = z+1)
        {
            konzkreis [z] = new KREIS ();
            konzkreis [z].MittelpunktSetzen(200,150);
            konzkreis [z].RadiusSetzen(140-z*3);
            konzkreis [z].FarbeSetzen("zufall");
        }
    }
    void WeissRotAnzeigen
    {
        for (int z=0;z<=39;z=z+2)
        {
            Konzar[z].FarbeSetzen("weiss")
        }
        for (int z=0;z<=39;z=z+1)
        {
            Konzar[z].FarbeSetzen("rot")
        }
    }
    
}