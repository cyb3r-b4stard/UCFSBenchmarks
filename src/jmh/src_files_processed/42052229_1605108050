public class Trip {
    private String _guideName;
    private int _noOfCountries;
    private Date _departureDate;
    private Date _returningDate;
    private int _noOfTravellers;
    /**
    * creates a new Date object
    * @param _day the day in the month(1-31)
    * @param _month the month in the year
    * @param _year the year (in 4 digits)
    */

public Trip (String name ,int nofcountries , int depDateD ,int depDateM ,int depDateY , int reDateD,int reDateM,int reDateY,int noOfTrvls)
{
  _guideName = name;
        _noOfCountries = 1;
        if (nofcountries> 0 && nofcountries<=10)
        {
            _noOfCountries = nofcountries;
           }
           _departureDate=new Date(depDateD,depDateM,depDateY);
           _returningDate=new Date(reDateD,reDateM,reDateY);
           _noOfTravellers = 10;
        if(noOfTrvls>0 && noOfTrvls <=50){
            _noOfTravellers = noOfTrvls;
    }
           
}
    
    /**
    * creates a new Date object
    * @param _day the day in the month(1-31)
    * @param _month the month in the year
    * @param _year the year (in 4 digits)
    */

    public Trip (String name ,int nofcountries , Date depDate , Date reDate ,int noOfTrvls)
    {
        _guideName = name;
        _noOfCountries = 1;
        if (nofcountries> 0 && nofcountries<=10)
        {
            _noOfCountries = nofcountries;
           }
        _departureDate=new Date(depDate);
        _returningDate=new Date(reDate);
        _noOfTravellers = 10;
        if(noOfTrvls>0 && noOfTrvls <=50){
            _noOfTravellers = noOfTrvls;
    }
}
    /**
    * Copy Constructor
    * @param passport to be copied
    */
    
public Trip (Trip other)
{
    _guideName = other._guideName;
    _noOfCountries = other._noOfCountries;
   _departureDate = new date(other._departureDate);
   _returningDate = new Date(other._returningDate);
   _noOfTravellers = other._noOfTravellers;
}
  public string getGuidename()
   {
   return _guidename;
    }
   public int getNoOfCountries()
   {
    return_noOfCountries:
      }
    public date getdepartureDate ()
      {
        return new date(departureDate)
       }
      public date getreturningDate ()
       {
          return date(returningDate);
        }
        public int getnoOfTravellers ()
        {
            return _noOfTravellers ;
        }
    
    public void set guidename (string guide name)
        {
        _guidename=guidename;
         }
         public void set Countries (int countries)
         {
         _noOfCountries = countries
        }
         public void depdate (Date depdate)
         
         _departureDate = new depdate;
           
         
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    }


   
   