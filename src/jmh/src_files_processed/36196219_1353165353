
public class Order
{
    private int widgets;
    private double price; 
    
    public Order(double p)
    {
        widgets = 0;
        price = p;
    }
    
    public int getWidgets()
    {
        return widgets;
    }
    
    public void setWidgets(int quantity)
    {
        if(widgets < 0)
        {
            System.out.println("ERROR: Cannot order negative widgets.");
        }
        else
        {
            widgets = quantity;
        }
    }
    
    public double getPrice()
    {
        if (widgets > 50000)
        {
            return price - .20;
        }
        else if (widgets > 20000)
        {
            return price - .10;
        }
        else if (widgets > 10000)
        {
            return price - .05;
        }
        else
        {
            return price;
        }
    }
    
    public String toString()
    {
        String output = "";
        
        output += getWidgets() + getPrice() + "\n";
        
        return output
    }
}