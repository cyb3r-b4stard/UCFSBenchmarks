public class Steckbrief
{
    public static void main( String[] args)
    {
        Scanner deineDaten=new Scanner(System.in);
        System.out.println("Bitte gib deinen Vornamen ein");
        String vorname = deineDaten.next();
        System.out.println("Bitte gib deinen Nachnamen ein");
        String nachname = deineDaten.next();
        System.out.println("Bitte gib dein Gechschlecht ein");
        String geschlecht = deineDaten.next();
        geschlecht.charAt(0);
        System.out.println("Bitte gib dein Alter ein");
        String alter = deineDaten.next(); 
        System.out.println("Bitte gib deine Körpergröße in m ein");
        String koerpergroesse = deineDaten.next();
        System.out.println("Bitte gib deine Postleitzahl ein");
        String postleitzahl = deineDaten.next();
        System.out.println("Bitte gib deine Telefonnummer ein");
        String telefonnummer = deineDaten.next();
        System.out.println("Bitte gib deinen Notendurchschnitt ein");
        double notendurchschnitt = deineDaten.nextDouble();
        System.out.println("Sie müssen Volljährig sein, um diese Seiten aufrufen zu können");
        System.out.println("Sind Sie Volljährig?");
        String volljaehrigkeit = deineDaten.next();
        boolean vollboo;
        if (volljaehrigkeit.equals( "Ja" )) {
            vollboo = true;
        }
        else {
            if(volljaehrigkeit.equals("true")) {  
                vollboo = true;
            }
            else {
                if(volljaehrigkeit.equals("Volljaehrig")) {
                    vollboo = true;
                }
                else {
                    if(volljaehrigkeit.equals("yes")) {
                        vollboo = true;
                    }
                    else {
                        if(volljaehrigkeit.equals("ja")) {
                            vollboo = true;
                        }
                        else {
                            if(volljaehrigkeit.equals("Richtig")) {
                                vollboo = true;
                            }
                            else {
                                vollboo = false;
                            }}}}}}
        boolean vollecht;
        if (alter <18){
            vollecht=false;
        }
        else {
            vollecht=true;
        }
        String vollausgabe;
            if(vollecht.equals(vollboo)){
            if(vollboo == true){vollausgabe = "Volljährig";}
            if(vollboo == false) {vollausgabe = "Nicht Volljährig";}
        }
            else{
                System.out.println("Sind Sie Sicher? true/false");
                boolean vollantwort = deineDaten.nextboolean();
                if(vollantwort.equals(true)){
                    vollausgabe = "\"Volljähirg\"";}
                    
                    
                
            
        System.out.println("Vorname: ");
        System.out.println(vorname);
        System.out.println("Nachname: ");
        System.out.println(nachname);
        System.out.println("Geschlecht: ");
        System.out.println(geschlecht);
        System.out.println("Alter: ");
        System.out.println(alter);
        System.out.println("Körpergröße: ");
        System.out.println(koerpergroesse + "m");
        System.out.println("Postleitzahl: ");
        System.out.println(postleitzahl);
        System.out.println("Telefonnummer: ");
        System.out.println(telefonnummer);
        System.out.println("Notendurchschnitt: ");
        System.out.println(notendurchschnitt);
        System.out.println("Volljährigkeit: ");
        System.out.println(vollausgabe)

       
    }     
}