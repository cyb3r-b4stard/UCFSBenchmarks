import java.util.*;
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Group
{
    private String name;
    private ArrayList<Player> players;
    
    
    public Group(String name){
        this.name=name;
        players = new ArrayList<Player>();
    
    }
    
    
    public void add(Player p){
    
        players.add(p);
    }
    
    
    
    public void remove(Player p){
    
        players.remove(p);
    }
    
    
    public ArrayList<Player> onPlatform(String platform){
        ArrayList<Player> res = ArrayList<Player>();
        return res;
    }
    
}