
/**
 * ########### ### #### ### ###### ######.
 * 
 * @###### (### ####) 
 * @####### (#### ############## #### ### #####)
 */
public class ARBEIT
{
   private WELT hösi;
   private ROBOTER hausi;

    /**
     * Konstruktor für Objekte der Klasse ARBEIT
     */
    public ARBEIT()
    {
        hösi = new WELT (10, 10, 10);
        hausi = new ROBOTER(1, 1, 'S', hösi); 
       
    }

   
    public void InDieEcke()
    {
        do{hausi.LinksDrehen();}
        while(!hausi.IstBlickNorden());
        
        
        while(!hausi.IstWand())
        {hausi.Schritt();}
        
        
        hausi.LinksDrehen();
        
        while(!hausi.IstWand())
        {hausi.Schritt();}
        
        
        hausi.LinksDrehen();

        
        
       


    }
    public void MauerBau(int l, int h)
    {
       for(int k=1;k<=l;k++)
      {  for(int i=1;i<=h;i++)
        {hausi.Hinlegen();}
        hausi.LinksDrehen();
        hausi.Schritt();
        hausi.RechtsDrehen();
    } 
}
public void Ausführen()
{
InDieEcke();
for(int i=1;i<=100,i++)
while(!hausi.IstWand())
{hausi.Hinlegen(), Schritt();}
}
}