}
public void veg()
{
    Scanner inp=new Scanner(System.in);
    System.out.println("VEGETARIAN SUBS");
    System.out.println("1.Veggie Delight\tRs.100");
    System.out.println("2.Aloo patty\t\tRs.120");
    System.out.println("3.Corn and peas\t\tRs.120");
    System.out.println("4.Veg Shammi\t\tRs.135");
    System.out.println("5.Veggie patty\t\tRs.135");
    System.out.println("6.Paneer tikka\t\tRs.135");
    System.out.println("Enter choice. ");
    ch1=inp.nextInt();
    if(ch1==1)
    bill=bill+100;
    else if(ch1==2 || ch1==3)
    bill=bill+120;
    else if(ch1==4 || ch1==5 || ch1==6)
    bill=bill+135;
}
