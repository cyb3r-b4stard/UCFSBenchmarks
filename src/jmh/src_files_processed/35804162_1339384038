public void bread()
{
   Scanner inp=new Scanner(System.in);
   System.out.println("BREAD CHOICES");
   System.out.println("1.Hearty Italian");
   System.out.println("2.Multi grain");
   System.out.println("3.Italian");
   System.out.println("4.Multi grain with honey oat");
   System.out.println("5.Parmesan oregano");
   System.out.println("Enter choice. ");
   ch3=inp.nextInt();
   if(ch3==1)
   br="Hearty Italian bread ";
   else if(ch3==2)
   br="Multi grain bread ";
   else if(ch3==3)
   br="Italian bread";
   else if(ch3==4)
   br="Multi grain with honey oat bread ";
   else if(ch3==25)
   br="Parmesan oregano bread ";
}
public void drinks()
{
    Scanner inp=new Scanner(System.in);
    System.out.println("DRINK CHOICES\t\tMedium\t\tLarge");
    System.out.println("1.Iced tea\t\tRs.50\\Rs.60");
    System.out.println("2.Cold coffee\t\tRs.60\\Rs.70");
    System.out.println("3.Soft drinks\t\tRs.45\\Rs.50");
    System.out.println("4.Bottled water\t\tRs.20\\Rs.35");
    System.out.println("5.Diet coke\t\tRs.50");
    System.out.println("6.Snapple\t\tRs.150");
    System.out.println("Enter choice of drink: ");
    ch4=inp.nextInt();
    System.out.println("Enter size of drink: ");
    System.out.println("1.Medium ");
    System.out.println("2.Large ");
    int size=inp.nextInt();
    int dc=0;
    if(size==1)
    {
        if(ch4==1 || ch4==5)
        dc=50;
        else if(ch4==2)
        dc=60;
        else if(ch4==3)
        dc=45;
        else if(ch4==4)
        dc=20;
        else if(ch4==6)
        dc=150;
    }
    else if(size==2)
    {
        if(ch4==1)
        dc=60;
        else if(ch4==2)
        dc=70;
        else if(ch4==3 || ch4==5)
        dc=50;
        else if(ch4==4)
        dc=30;
        else if(ch4==6)
        dc=150;
    }
    bill=bill+dc;
}
public void salad()
{
    Scanner inp=new Scanner(System.in);
    System.out.println("SALAD CHOICES");
    System.out.println("1.Veggie delight\t\tRs.160");
    System.out.println("2.Roasted chicken \t\tRs.225");
    System.out.println("3.Tuna\t\tRs.225");
    System.out.println("4.Turkey\t\tRs.255");
    System.out.println("Enter choice. ");
    ch5=inp.nextInt();
    if(ch5==1)
    bill=bill+160;
    else if(ch5==2 || ch5==3)
    bill=bill+225;
    else if(ch5==4)
    bill=bill+255;
}
public void cookie()
{
    Scanner inp=new Scanner(System.in);
    System.out.println("Choices of cookies are: ");
    System.out.println("1.Single choco chip\t\tRs.30");
    System.out.println("2.Double choco chip\t\tRs.40");
    System.out.println("Enter choice. ");
    ch6=inp.nextInt();
    System.out.println("Enter number of cookies: ");
    int num=inp.nextInt();
    if(ch6==1)
    bill=bill+(30*num);
    if(ch6==2)
    bill=bill+(40*num);
}
