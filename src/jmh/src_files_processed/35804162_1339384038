import java.util.*;
class project2016
{
    float bill=0;
    int ch1,ch2,ch3,ch4,ch5,ch6;
    String str1,str2,str3;
    String br;
public static void main()
{
    Scanner inp=new Scanner(System.in);
    project2016 obj=new project2016();
    obj.intro();
    String key;
    do
    {
    System.out.println("Enter 1 for Veg or 2 for Non-Veg");
    int ch=inp.nextInt();
switch(ch)
    {
    case 1: obj.veg();
    case 2: obj.nonveg();
    }
    obj.bread();
    System.out.println("Would you like something to drink? ");
    String str1=inp.nextLine();
    if(str1.equalsIgnoreCase("yes"))
    {
    obj.drinks();
    } 
    System.out.println("Would you like a salad? ");
    String str2=inp.nextLine();
    if(str2.equalsIgnoreCase("yes"))
    {
    obj.salad();
    } 
    System.out.println("Would you like a cookie? ");
    String str3=inp.nextLine();
    if(str3.equalsIgnoreCase("yes"))
    {
    obj.cookie();
    } 
System.out.println("To buy another sub enter either y or Y otherwise press any other key to exit");
     key=inp.nextLine();
}while(key.equalsIgnoreCase("y"));
}
