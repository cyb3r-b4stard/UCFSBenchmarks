import java.util.*;
public class Temperature {
    public static void main (String [] args) {
      
    int temp;
    Scanner keyboard = new Scanner (System.in);
    
    System.out.print("Please enter a temperature");
    temps = keyboard.nextInt();
    
    
    if (temp >=120)
    {
        System.out.println("too hot to go outside");
    }
     else if (temp >=105)
    {
        System.out.println("Still too hot to go outside");
    }
     if (temp >=90)
    {
        System.out.println("its a hot day");
    }
     if (temp >=75)
    {
        System.out.println("perfect temp");
    }
     if (temp >=60)
    {
        System.out.println("good for sports");
    }
     if (temp >=45)
    {
        System.out.println("little chilly");
    }
     if (temp >=30)
    {
        System.out.println("below freezing");
    }
     if (temp >=15)
    {
        System.out.println("good for skiing");
    }
     if (temp >=0)
    {
        System.out.println("hot chocolate weather");
    }
     if (temp >=-15)
    {
        System.out.println("too cold to go outside");
    }
}
