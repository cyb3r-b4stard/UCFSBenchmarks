import java.util.Scanner;
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### ######
 * @####### ##/##/####
 */
public class Hangman
{
    public static void main(String []args)
    {
        Scanner in = new Scanner(System.in);
        System.out.println("Please enter a word, all in lowercase, then press enter. You can only miss 5 times.");
        String word = new String();
        word = in.nextLine();
        boolean[] check = new boolean [word.length()];
        int missed = 5;
        int incorrect = 0;
        for(int n=0;n<missed;n++)
        {
            System.out.println("Plese guess a letter. Good luck babe! <3 ");
            String guess = in.nextLine;
            if(guess = word.charAt(n))
                check[n]=true;
            else
            {
                incorrect++1
                System.out.prinln("Wrong, you have "+(missed-incorrect)+"times left. Please enter another letter")
            }
        }
        for(int i=0;i<word.length();i++)
            if(check[i]==false)
                System.out.print("_"+" ");

            else
                System.out.print(word.charAt(i)+" ");
    }
}