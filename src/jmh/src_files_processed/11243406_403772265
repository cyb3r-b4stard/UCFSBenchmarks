import java.util.*;
public class tar3
{
    static Scanner reader=new Scanner(System.in);
    public static void main(String[]args)
    {
        int num1, num2, num3, mone=0, , avarage=0,num=0;
        System.out.println("הכנס ציון ראשון");
        num1=reader.nextInt();
        System.out.println("הכנס ציון שני");
        num2=reader.nextInt();
        System.out.println("הכנס ציון שלישי");
        num3=reader.nextInt();
        if (num1>54)
        {
            mone++;
            num=num1;
        }
        if (num2>54)
        {
            mone++;
            num=num2;
        }
        if (num3>54)
        {
            mone++;
            num=num3;
        }
        avarage=num/mone;
        System.out.println("ממצוע הציונים העוברים את 54"+avarage);
    }
}
        