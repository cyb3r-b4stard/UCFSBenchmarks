 */
public class Emblem
{
    private String firstName;
    private String middleInitial;
    private String lastName;

    /**
     * Constructs an Emblem given first and last names and
     * middle initial
     * @param first the first name 
     * @param middle the middle initial
     * @param last the last name
     */
    public Emblem(String first, String middle, String last)
    {
        firstName = first;
        middleInitial = middle;
        lastName = last;

    }

    /**
     * Constructs an Emblem given first and last names and
     * initlizing the middle initial to the empty string
     * @param first the first name 
     * @param last the last name
     */
    public Emblem(String first, String last)
    {
        firstName = first;
        middleInitial = "";
        lastName = last;
    }

    /**
     * Gets the first name for this emblem
     * @return the first name
     */
    public String getFirst()
    {
        return firstName;
    }

    /**
     * Gets the last name for this emblem
     * @return the last name
     */
    public String getLast()
    {
        return lastName;
    }

    /**
     * Gets the middle initial for this emblem
     * @return the middle initial
     */
    public String getMiddleInitial()
    {
        return middleInitial;
		int middlecount = middleInitial.length();
        if (middlecount <= 1)
        {
            actualMiddlecount == middlecount;
        }
        else if (middlecount > 1)
        {
            middleInitial = middleInitial.substring(0,1);
        }

    }

    /**
     * Gets the number of characters in the full name - 
     * not counting spaces
     * @return the number of characters in the full name 
     */
    public int characterCount() 
    {
        int count = firstName.length() + middleInitial.length() + lastName.length();
        return count;
    }

    /**
     * Gets the full name with spaces separating the names. 
     * Note: When the there is no middle initial, there will be 2 spaces between first and last name.
     * @return the full name
     */
    public String getFullName() 
    {
        return firstName + " " + middleInitial + " " + lastName;
        if (middle.equals(" "))
        {
            String fullName = first + " " + last;
            return fullName;
        }
        else
        {
            String fullName = first + " " + middle + " " + last;
            return fullName;
        }
    }

    /**
     * Gets the initials comprising the Emblem (first initial, middle 
     * initial, last initial) with no spaces
     * @return the initials comprising the Emblem 
     */
    public String getEmblem() 
    {
        return firstName.charAt(0) +  middleInitial +  lastName.charAt(0);
    }
}