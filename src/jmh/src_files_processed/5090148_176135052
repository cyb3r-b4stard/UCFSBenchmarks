public class Auto

{
       double tankvolumen;
       double benzinstand;
       double verbrauch;
       double kmstand;
       
       public Auto()
       {
           int tankvolumen = 70.0;
           int benzinstand = 50.0;
           int verbraucch = 8.6;
           int kmstand = 770000;
       }
       
       public Auto(double tv, double bst , double verb, double km)
       {
           tankvolumen = tv;
           benzinstand = bst;
           verbrauch = verb;
           kmstand = km;
        
       }
       
       public void tanken(double liter)
       {
           benzinstand = benzinstand + liter;
       }
       
       public void anzeigen ()
       {
           System.out.println("Tankvolumen = "+tankvolumen+" Liter");
           System.out.println("Benzinstand = "+benzinstand+" Liter");
           System.out.println("Verbrauch = "+verbrauch+" Liter");
           System.out.println("Kmstand = "+kmstand+" Liter");
       }
