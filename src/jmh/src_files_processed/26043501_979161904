import java.util.*;

public class Wypozyczalnia implements Dostepnosc
{
   private ArrayList<Auto> pojazdy = new ArrayList<Auto>();
   private int ilosc;
   
   public void dodajPojazd(Auto a)
   {
       pojazdy.add(a);
   }
   
   public void wyswietlListePojazdow()
   {
       if (pojazdy.size() == 0) System.out.println("Lista pusta! Dodaj obiekt.");
       else
       {
           for (int i = 0; i < pojazdy.size(); i++)
           {
               System.out.println(pojazdy.get(i));
           }
       }
   }
   
   public static void main()
   {
       AutoOsobowe autoOsob1 = new AutoOsobowe("Audi",true,5); 
       AutoOsobowe autoOsob2 = new AutoOsobowe("Kia",false,5);
       
       AutoDostawcze autoDost1 = new AutoDostawcze("Iveco",true,3.65);  
       AutoDostawcze autoDost2 = new AutoDostawcze("Mercedes",true,2.50);
       
       Wypozyczalnia wypozycz1 = new Wypozyczalnia();  
       
       wypozycz1.dodajPojazd(autoOsob1);  
       wypozycz1.dodajPojazd(autoOsob2);
       wypozycz1.dodajPojazd(autoDost1);
       wypozycz1.dodajPojazd(autoDost2);
       
       wypozycz1.wyswietlListePojazdow();  
       
       
   }
   
