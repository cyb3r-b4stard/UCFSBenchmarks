import java.awt.event.*;
import javax.swing.*;
import java.awt.*;
/**

 */
public class ToolBar extends JPanel implements ActionListener
{
    private JButton select1;
    private JButton select2;
    private JButton select3;
    private JButton select4;
    private TextPanel messagePanel;

    public ToolBar()
    {
        select1 = new JButton("Coke");
        select2 = new JButton("Fanta");
        select3 = new JButton("Pepsi");
        select4 = new JButton("7UP");

        select1.addActionListener(this);
        select2.addActionListener(this);

        setLayout(new FlowLayout());
        add(select1);
        add(select2);
        add(select3);
        add(select4);

    }

    public void setTextPanel(TextPanel messagePanel)
    {
        this.messagePanel= messagePanel;

    }

    public void actionPerformed( ActionEvent event) 
    { 
        JButton touch =(JButton)event.getSource();
        if ( touch == select1){
            messagePanel.appendTextItem("Coke \n");
        }
        else{
            messagePanel.appendTextItem("BudLite \n");
        }
        else if {

            messagePanel.appendTextItem("Pepsi \n");
        }

        else if{

            messagePanel.appendTextItem("7UP \n");
        }
    }
}