


public class sonata
{
    private Square muro;
    private Square ventana;
    private Triangle techo;
    private Circle sol; 

    /**
     * Constructor for objects of class sonata
     */
    public sonata()
    {
        muro= new Square();
        muro.changeColor ("yellow");
        muro.makeVisible ();
        muro.changeSize (9999999) ;
        
        techo = new Triangle ();
        techo. makeVisible ();
        techo. changeColor ("black") ;
        techo.moveUp ();
        techo.moveUp ();
        techo.moveUp ();
        techo.moveUp ();
        techo.moveUp ();
        techo.moveUp ();
        techo.moveHorizontal (120) ;
        techo.moveRight ();
        techo.moveDown () ;
        techo.moveDown () ;
        techo.changeSize (100,200) ;
        techo.moveUp() ;
        techo.moveUp() ; 
        techo.moveRight ();
        techo.moveRight ();
        techo.moveRight ();
        

      
       
        
        
      
        
        
        ventana = new Square () ; 
        ventana. makeVisible () ;
        ventana. changeColor ( "blue") ;
        ventana.moveHorizontal (80) ;
        ventana.moveDown ();
        ventana.moveDown ();
        ventana.moveDown ();
        ventana.changeSize(100);
        
   
        sol = new Circle ();
        sol.changeColor ( "yellow") ;
        sol.makeVisible ();
        sol.slowMoveVertical (17);
      

    