public class ArraySample
{
    /*
     * Create a method that returns the first value in an array of ints.
     */
    public static int firstValue(int[] arr)
    {
     return arr[0];    
    }

    /*
     * Create a method that returns the last value in an array of ints.
     */
    public static int lastValue(int[] arr)
    {
        return arr[arr.length-1]; 
    }

    /*
     * Create a method that returns a copy of an array with the elements in reversed order.
     */
    public static int[] reverse(int[] arr)
    {
       int[] arr2 = new int [arr.length];
        for (int i =0; i <= arr.length - 1; i++)
        {
            int y = arr[arr.length - i - 1];
            arr2[i] = x;
        }
        return arr2;
    }

    /*
     * Create a method that searches the array and returns the index of the int value.
     */
    public static int indexOf (int[] arr, int value) 
    {
        for (int x = 0; x < arr.length; x++)
        {
            if (arr[x] = value)
                {
                return x;
                }
            else 
                {
            continue;
                }
        }
        return -1;
    }

    /*
     * Create a method that adds every single int in a given array and return the value.
     */
    public static int sum (int[] arr) 
    {
        sum = 0;
        for (int i = 0; i<= arr.length - 1; i++)
        {
            sum += arr[i];
        }
        return sum;
    }

    /*
     * Create a method that contains the elements of an array inside of a bracketed list. Separate the 
     * elements with commas and a space.
     * Example output: [1, 2, 3, 4]
     */
    public static String toString(int[] arr) 
    {
        
        for (int i = 0; i <= arr.length - 1; i++)
        {
            String[] arr2 = arr["[" + arr[i] + "," + "]"]; 
        }
        return String[] arr2;
    }
}