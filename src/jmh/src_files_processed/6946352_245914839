public class VideoJuego
{
    private String nombre;
    private String codigo;
    private char categoria;
    private boolean idiomaIngles;
    private double costo;
    private int stock;
    private int edadPermitida;
    private String tipoConsola;
    private int annioLanzamiento;
    
    public VideoJuego()
    {
        nombre="mass effect";
        codigo="8569-9";
        categoria='i';
        idiomaIngles=true;
        costo=5000;
        stock=0;
        edadPermitida=0;
        tipoConsola="Pc";
        annioLanzamiento=1999;
    }
    public VideoJuego(String nombre1, String codigo1, char categoria1, boolean idiomaIngles1, double costo1, int stock1, int edadPermitida1, String tipoConsola1, int annioLanzamiento1)
    {
        setNombre(nombre1);
        setCodigo(codigo1);
        setCategoria(categoria1);
        setIdiomaIngles(idiomaIngles1);
        setCosto(costo1);
        setStock(stock1);
        setEdadPermitida(edadPermitida1);
        setTipoConsola(tipoConsola1);
        setAnnioLanzamiento(annioLanzamiento1);
    }
    public String getNombre1()
    {
       return nombre; 
    }
    public String getCodigo1()
    {
        return codigo;
    }
    public char getCategoria1()
    {
        return categoria;
    }
    public boolean getIdiomaIngles1()
    {
        return idiomaIngles;
    }
    public double getCosto1()
    {
        return costo;
        }
    public int getStock1()
    {
        return stock;
    }
    public int getEdadPermitida1()
    {
        return edadPermitida;
    }
    public String getTipoConsola1()
    {
        return tipoConsola;
    }
    public int getAnnioLanzamiento1()
    {
        return annioLanzamiento;
    }
    
    public void setNombre(String nombre1)
    {
        this.nombre=nombre1;
    }
    public void setCodigo(String codigo1)
    {
        this.codigo=codigo1;
    }
    public void setCategoria(char categoria1)
    {
        this.categoria=categoria1;
    }
    public void setIdiomaIngles(boolean idiomaIngles1)
    {
        this.idiomaIngles=idiomaIngles1;
    }
    public void setCosto(double costo1)
    {
        this.costo=costo1;   
    }
    public void setStock(int stock1)
    {
        this.stock=stock1;
    }
    public void setEdadPermitida(int edadPermitida1)
    {
        this.edadPermitida=edadPermitida1;
    }
    public void setTipoConsola(String tipoConsola1)
    {
        this.tipoConsola=tipoConsola1;
    }
    public void setAnnioLanzamiento(int annioLanzamiento1)
    {
        this.annioLanzamiento=annioLanzamiento1;
    }
    
    public void printVideoJuego()
    {
        System.out.println("Nombre: " +getNombre1());
        System.out.println("Codigo: " +getCodigo1());
        System.out.println("Stock: " +getStock1());
        System.out.println("Edad Minima: " +getEdadPermitida1());
        System.out.println("Tipo de Consola: " +getTipoConsola1());
        System.out.println("Categoria: " +getCategoria1());
        System.out.println("Esta en ingles: " +getIdiomaIngles1());
        System.out.println("Costo del producto: " +getCosto1());
        System.out.println("AÃ±o de lanzamiento: " +getAnnioLanzamiento1());
    }
        
    public double PrecioVenta(int cantidadVendida, double porcentaje)
    {
        double precioVenta=((getCosto1()*porcentaje)+getCosto1());
        System.out.println("Para tener una gancia de: " +porcentaje+ " porciento debe venderlo a: "+precioVenta);
        precioVenta=precioVenta*cantidadVendida;
        System.out.println("El Cliente debe pagar: " +precioVenta+ " por: " +cantidadVendida+ " juegos");
        return precioVenta;
    }
    
    public String toString()
    {
        return getNombre1()+"--"+getTipoConsola1()+"--"+getEdadPermitida1();
    }
    public void setNombre1(String nom1)
    if(nom1.length()<=120)
    {
        this.nombre1=nom1;
    }
    }
    
