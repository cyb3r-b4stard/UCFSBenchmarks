import java.io.*;
public class CopyBytes
{
  public static void main(String[] args) throws IOException{
      FileInputStream in=null;
      FileInputStream out=null;
      try{
          in=new FileInputStream("nick.txt");
          out=new FileOutputStream("mac.txt");
          int c;
          while((c=in.read())!=-1){
              out.write(c);
            }
        }finally{
            if(in!=null){
                in.close();
            }
            if(out!=null){
                out.close();
            }
      }
}