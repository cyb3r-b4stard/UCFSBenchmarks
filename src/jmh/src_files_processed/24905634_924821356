public class palindromeMax {

    
    public static void main (String[] params) {
        String w = "ABBA";
        boolean P[][] = new boolean[w.length()][w.length()];
        
        int debutPalindrome = 0;
        int longMax = 1;
        
        for (int i=0; i<w.length(); i++){
            P[i][i]=true;
        }
        
        
        for (int i=0; i<w.length()-1; i++){
            if(w.charAt(i)==w.charAt(i+)){
                 P[i][i+1]=true;
            }
        }
        
    } 
    
} 
