 */
import java.util.Scanner;
public class lab1
{
   public static void main ()
   {
       Scanner In = new Scanner ( System.in );
       
       System.out.println("Enter your temperature:");
       
       int temp = In.nextInt();
       
       double c = 5.0/9.0 * (temp - 32)
       double f = ((temp * 9.0)/5.0 + 32)
       
       System.out.println("Your temperature in Fahrenheit  converts to " + 5.0/9.0 * (temp - 32)  + " degrees Celsius.");
       
       if (c < 0)
        System.out.println("It's below freezing!");
       else if (c > 100)
        System.out.println("It's above boiling!");
       
       System.out.println("Your temperature in Celsius converts to " + ((temp * 9.0)/5.0 + 32) + " degrees Fahrenheit.");
    }
}
