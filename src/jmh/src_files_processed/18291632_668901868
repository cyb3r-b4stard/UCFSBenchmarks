    public static void multiply()
    {
        double numx;
        double numy;
        double calculated_result;
        
        IO.output("Enter an integer, x: ");
        numx = IO.inputDouble( );
        IO.output("Enter an integer, y: ");
        numy = IO.inputDouble( );
        
        calculated_result = numx*numy;
        
        IO.outputln("Answer = " + calculated_result);
          
        
        
        
       
    }
    
    public static void calculateTriangleArea()
    {
        double width;
        double height;
        double calculatedArea;
        
        IO.output("Enter the width of the triangle: ");
        width = IO.inputDouble( );
        IO.output("Enter the height of the triangle: ");
        height = IO.inputDouble( );
        
        calculatedArea = width*height/2;
        
        IO.outputln("The triangle area = " + calculatedArea); 
        
        
        
        
        
        
    }
    
