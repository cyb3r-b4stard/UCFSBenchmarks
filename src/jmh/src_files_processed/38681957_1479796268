import java.util.*;

public class loops11
{
    public static void main (String [] args)
    {
      Scanner in = new Scanner (System.in);
      System.out.println ("how tall would you like your tree? ");
      int var = in.nextInt();
      int start = var;
      int slash = 0;
      int lines = 0;
      int counter = 0;
      int stump = 0;
      int space = 0;
       while (start >= lines)
      {
        while(var>=1)
         {
           System.out.print(" ");
           var = var - 1;
         }
        start = start - 1;
        var = start;
            while(counter<=slash)
        {
            System.out.print("*");
            counter=counter + 1;
        }
        slash = slash + 2;
        counter = 0;
        System.out.println();
      }
      while (stump<=3)
      {
          while(space<=var)
          {
           System.out.print(" ");
           space = space + 1
          }
          System.out.println("***");
          stump = stump+1;
      }
    }
}