
/**
 * ########### ### #### ### ###### ################.
 * 
 * @###### (### ####) 
 * @####### (#### ############## #### ### #####)
 */
public class Getraenkeautomat
{
    private int inhaltCola;
    private int inhaltFanta;
    private int inhaltSprite;
    private Becher neuerBecher;

    /**
     * Konstruktor für Objekte der Klasse Getraenkeautomat
     */
    public Getraenkeautomat()
    {
        this.inhaltCola = 10000;
        this.inhaltFanta = 10000;
        this.inhaltSprite = 10000;
    }

    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public void becherAuswahl(int becherVolumen)
    {   
        neuerBecher = new Becher(becherVolumen);
    }
    public String colaEinfuellen(int menge)
    {
        inhaltCola = inhaltCola - menge;
        neuerBecher.setFuellen;
        return "Cola wurde eingefüllt";
    }
}