
/**
 * ########### ### #### ### ###### #########.
 * 
 * @###### (######) 
 * @####### (##.##.####)
 */
public class Buecherei
{
    private String autor;
    private String titel;
    private int seiten;
    private String signatur;
    private int ausgeliehen;
    private int ausleihZeit;
    /**
     * Konstruktor für Objekte der Klasse Buecherei
     */
    public Buecherei()
    {
       autor = " ";
       titel = " ";
       seiten = 0;
       signatur = " ";
       ausgeliehen = 0;
       ausleihZeit = 3;
    }
    /**
     * Setze den Autor und den Titel, wenn ein Exemplar erzeugt wird
     * Konstruktur mit Eingabe 
     */
    public Buecherei (String eBuchautor, String eBuchtitel, int eSeiten, String eSignatur, int eAusleihZeit)
    {
    autor = eBuchautor;
    titel = eBuchtitel;
    if (eSeiten >0)
        {
            seiten = eSeiten;
        }
        else
        {
            System.out.println ("Es sind nur positive Seitenzahlen  moeglich");
            System.out.println ();
        }
        if (eSignatur.length()== 10)
    signatur = eSignatur;
    else 
    {
        System.out.println ("Es muessen exakt 10 Zeichen eigegeben werden");
        System.out.println ();
    }
    if (eAusleihZeit >= 0 && eAusleihZeit <= 3)
        ausleihZeit = eAusleihZeit;
        else 
        {
            System.out.println ("Es duerfen nur Zahlen zwischen 0 und 3 eingegeben werden");
            System.out.println ();
        }
    }
    
    public String gibAutor()
    {
        return autor;
    }
    public void setzeAutor(String eAutor)
    {
        autor = eAutor;
    }
    
    public String gibTitel()
    {
        return titel;
    }
    public void setzeTitel(String eTitel)
    {
        titel = eTitel;
    }
    
    public int gibSeiten()
    {
        return seiten;
    }
    public void setzeSeiten(int eSeiten)
    {
        if (eSeiten >0)
        {
            seiten = eSeiten;
        }
        else
        {
            System.out.println ("Es sind nur positive Seitenzahlen  moeglich");
            System.out.println ();
        }
    }
    public String gibSignatur()
    {
        return signatur;
    }
    public void setzeSignatur(String eSignatur)
    {
    if (eSignatur.length()== 10)
    signatur = eSignatur;
    else 
    {
        System.out.println ("Es muessen exakt 10 Zeichen eigegeben werden");
        System.out.println ();
    }
    }
    public int gibAusgeliehen()
    {
        return ausgeliehen;
    }
    public void setzeAusgeliehen(int eAusgeliehen)
    {
        ausgeliehen = eAusgeliehen;
    }
    public int gibAusleihZeit()
    {
        return ausleihZeit;
    }
    public void setzeAusleihZeit(int eAusleihZeit)
    {
        if (eAusleihZeit >= 0 && eAusleihZeit <= 3)
        ausleihZeit = eAusleihZeit;
        else 
        {
            System.out.println ("Es duerfen nur Zahlen zwischen 0 und 3 eingegeben werden");
            System.out.println ();
        }
    }
    
    public void ausgeliehen ()
    {
        ausgeliehen = ausgeliehen +1;
    }
    
    public void schreibTitel()
    {
      System.out.println ("Der Titel des Buches lautet " + titel);
    }
    
    public void schreibAutor()
    {
      System.out.println ("Der Autor des Buches heißt " + autor);
    }
    
    public void schreibdetailAusgabe()
    {
       String ausgabeText
      System.out.println ("Der Autor des Buches heißt " + autor);
      System.out.println ("Der Titel des Buches lautet " + titel);
      System.out.println ("Das Buch hat " + seiten);
      if(signatur.equals(" "))
      System.out.println ("Die Signatur des Buches ist unbekannt");
      else
      System.out.println ("Die Signatur des Buches lautet " + signatur);
      
      switch(ausleihZeit)
      {
          case 0:
          ausgabeText = "keine Ausgabe moeglich";
          break;
          case 1:
          ausgabeText = "Ausleihe uebers Wochenende";
          break;
          case 2:
          ausgabeText = "Ausleihe fuer 7 Tage";
          break;
          case 3:
          ausgabeText = "Ausleihe beliebig lange moeglich";
          break;
          default:
          ausgabeText = "Fehler";
          
          System.out.println(ausgabeText);
      }
      System.out.println ("Das Buch wurde" + ausgeliehen);
      System.out.println ();
    }
}