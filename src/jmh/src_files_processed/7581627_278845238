        Scanner scan= new Scanner(System.in); 
        System.out.print( "Plese give the first X value ");
        x= scan.nextFloat() ;
        
        System.out.print( "Plese give the first Y value ");
        y= scan.nextFloat();
        
        
        System.out.print( "Plese give the second X value ");
        
