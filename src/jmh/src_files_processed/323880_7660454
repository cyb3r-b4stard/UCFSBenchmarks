import java.util.Scanner;
import javax.swing.JOptionPane;

/**
 * ####### ### ######
 * 
 * @###### ###### ########
 * @####### ##.##.####
 */
public class AnimalQuiz
{
    public static void main(String[] args)
    {
        Scanner userInput = new Scanner(System.in);
        boolean answerIsCorrect;
        int isBird;
        String answer, answerFly, answerEggs;
        int canFly, layEggs;
        

        System.out.println("Think of an animal.\n");
        answer = JOptionPane.showInputDialog("Is it a bird?");
        isBird = Integer.parseInt(answer);
        answerFly = JOptionPane.showInputDialog("Can it fly?");
        canFly = Integer.parseInt(answerFly);
        answerEggs = JOptionPane.showInputDialog("Does it lay eggs?");
        layEggs = Integer.parseInt(answer);

        System.out.println(isBird + " " + canFly + " " + layEggs);

        answerIsCorrect = ask("Is it a kookaburra? ", userInput);    
        answerIsCorrect = ask("Is it an emu? ", userInput);
        answerIsCorrect = ask("Is it a platypus? ", userInput);
        answerIsCorrect = ask("Is it a kangaroo? ", userInput);

        switch (isBird)
        {
            case 1:
                System.out.print(canFly == true ? answerIsCorrect = ask("Is it a kookaburra? ", userInput): answerIsCorrect = ask("Is it an emu? ", userInput));
                break;
            
            case 0:
                System.out.print((layEggs == true) ? answerIsCorrect = ask("Is it a platypus?", userInput): answerIsCorrect = ask("Is it an kangaroo? ", userInput));
                break;
        }

        System.out.print(answerIsCorrect == true ? "Yes! I am invincible!": "Oh. Well, thank you for playing.");
    }

    /**
     * A utility method to ask a yes/no question
     * 
     * @param question the question to ask
     * @param a scanner for user input
     * 
     * @return whether the user answered "yes" (actually, whether the user answered anything starting with Y or y)
     */
    private static String ask(String question, Scanner userInput)
    {
        System.out.print(question);

        String answer = userInput.nextLine().trim();
        
        return (answer.charAt(0) == 'Y' || answer.charAt(0) == 'y');
    }
}