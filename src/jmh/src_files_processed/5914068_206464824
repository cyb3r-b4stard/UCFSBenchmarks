import kareltherobot.*;
public class MazeWalker extends UrRobot
{
   
    public MazeWalker(int street, int avenue, Direction direction, int beepers)
    {
        super(street, avenue, direction, beepers);
    }
    public boolean followWallRight;
{ 
    while !nextToBeeper())
    {   if (!frontIsClear())
        {   turnRight();
            if (frontIsClear))
            {   move();
                else
                {   turnRight();
                }
            }
        }
        else move();
    }
    else
    {   pickBeeper();
        turnOff();
    }
   

}