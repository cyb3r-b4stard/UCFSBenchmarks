import java.util.Scanner;
/**
 * ############
 */
public class Notenrechner_UI
{

public void ausrechnen()
{
    Scanner sc = new Scanner (System.in);
    System.out.println( "Willkommen im Notenrechner, bitte hier deine Punktzahl eingeben:");
    double tEpunktzahl = sc.nextDouble();
    System.out.println( "Bitte hier Gesamtpunktzahl eingeben:");
    double tGpunktzahl = sc.nextDouble();
    Notenrechner nr = new Notenrechner();
    nr.setEpunktzahl(tEpunktzahl);
    nr.setGpunktzahl(tGpunktzahl);
    if(nr.prozent()<50)
    {
         System.out.println( "Du hast mit" + nr.prozent() + "% bestanden. " ) ;
        }
        else
        {
         System.out.println( "Du hast mit" + nr.prozent() + "% nicht bestanden. " ) ; 
         
    
}    
   
   public static void main(String args[]) 
{
   Notenrechner_UI nui = new Notenrechner_UI();
   nui.ausrechnen();

}
}