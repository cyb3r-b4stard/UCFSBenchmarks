import java.util.ArrayList;


public class Weinachtsbaum {
    private int NumberOfLevels;
    
    private char characterToDraw = '*';
   
    private ArrayList<String> tree;
    
    private int höhe;
 
    public Weinachtsbaum(){
       this.NumberOfLevels = NumberOfLevels;
       this.characterToDraw = characterToDraw;
      NumberOfLevels= 6;
      characterToDraw= '°';
       tree = new ArrayList<String>();
     
    }
    
    public void drawTree(){
        String treeLine;
            for ( höhe=0; höhe< NumberOfLevels ;höhe++){ 
            
            for (int i= 0; i < höhe; i++)    {
                treeLine = "";
                
                for(int j=0; j< höhe - 1 -  i; j++){
                    treeLine += " ";
               
                }
                {treeLine1 = "";
                 for (int i= 0; i < NumberOfLevels; i++)  
                 {                
                    treeLine1 += " ";   
                
                for(int j=0; j< höhe - 1 -  i; j++){
                    treeLine += " ";
               
                }
                
                for (int k = 0; k < i*2+1; k++){
                    treeLine += characterToDraw;
                }
                for(int j=0; j< höhe - 1 -  i; j++){
                    treeLine += " ";
                }
                tree.add(treeLine);
                 
            }
             
        }
               
        for (String line : tree) {
           
            System.out.println(line);
        }   
       
    }
     public void drawTreeBack(){
        
        for (int m = tree.size() ; m > 0 ; m--) {
            System.out.println(tree.get(m - 1));
        } 
        
    }
