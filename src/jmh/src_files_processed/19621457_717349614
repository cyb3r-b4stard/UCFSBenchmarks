
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Abono
{
   private String tipo;
   private String fecha_contrato ;
   private String periodo;
   private int valor ; 
   
   
 public Abono ()
 {
     this.tipo="";
     this.fecha_contrato="26-05-2015" ;
     this.periodo="" ;
     this.valor=500;
    }  
 public Abono (String tipo,String fecha_contrato , String periodo , int valor )
     {
     this.tipo=tipo;
     this.fecha_contrato=fecha_contrato ;
     this.periodo=periodo ;
     this.valor=valor; 
        }
 public void setTipo(String tipo)
 { if(tipo="Garrero" || tipo="Normal" || tipo="Economico")
     {this.tipo=tipo;}
   else
   {System.out.println ("No se reconoce el tipo de abono ");}
  }
 public boolean tipo ()
 {
     return tipo ;
    }
 public void setFecha_contrato (String fecha_contrato)
 {
     this.fecha_contrato=fecha_contrato ;
    }
 public String getFecha_contrato()
 {
     return fecha_contrato ;
    }
public void setPeriodo (String periodo)
{ if(periodo>=1 || periodo<=5)
    {this.periodo=periodo;}
   else
    {System.out.println("No esta en el periodo correspondinte"); }
}

public String getPeriodo ()
{
    return periodo ;
}
public void setValor (int valor )
{
    this.valor=valor ;
}
public int getValor ()
{
    return valor ;
}







}
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
