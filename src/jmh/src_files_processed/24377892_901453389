import java.util.Scanner;

public class Prog1108
{
    public static void main()
    {
        Scanner scan=new Scanner(System.in);
        int count=1,sale;
        double avg,tot=0;
        char flag;
        for (flag='y';flag=='y'||flag=='Y')
        {
            System.out.println("Enter the amount of cars: ");
            sale=scan.nextInt();
            tot=tot+sale;
            System.out.println("Next salesman. Countinue? (Y/N)");
            flag=scan.next().charAt(0);
            count++;
        }
        avg=tot/(count-1);
        System.out.println("The average sales is "+avg);
    }
}