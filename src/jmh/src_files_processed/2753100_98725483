import java.io.*;
import javax.swing.*;
import javax.swing.filechooser.*;
import java.util.*;

public class AnswerFileReader
{

    private char currentAnswer;
    private Scanner fileScanner;

    public AnswerFileReader(FileInputStream underlyingFile) 
    {

        fileScanner = new Scanner(underlyingFile);

    }

    private void advanceToNextAnswer() 
    {

        fileScanner.next();
        fileScanner.next();
        currentAnswer = fileScanner.next().charAt(0);

    }

    private char currentAnswer() 
    {                
        return currentAnswer;
    }

    private boolean hasMoreAnswers()
    {
        if(fileScanner.hasNext())

            return true;

    }