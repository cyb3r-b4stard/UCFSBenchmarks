public class alumno
{
    
    String nombre;
    int grupo;
    double calif1;
    double calif2;
    
    public void beca (double promedio)
    {
        if(promedio>70)
        {
            System.out.println("tienes beca...felicidades");
        }
        else
        {
            System.out.println("no tienes beca...lo siento");
        }
    }
    public void promedio()
    {
        double promedio;
        promedio=(calif1+calif2)/2;
        System.out.println("el promedio de"...+nombre+..."es"...+promedio);
        beca(promedio);
    }
    public static void main(String args[])
    {
        alumno a=new alumno();
        a.nombre="jesus";
        a.grupo=602;
        a.calif1=100;
        a.calif2=100;
        a.promedio();
    }
}
         
