import java.util.Scanner;
public class power
{
   
    public static void main(Strin [] args)
    {
       Scanner reader = new Scanner(System.in);
       
       int power;
       int output;
       int count = 0;
       int value = 2;
       System.out.println("Please input the power you want 2 to be raised to.");
       power = reader.nextInt();
do (count < power)while;
       {
          value * 2;
          count += 1;
      
       
    }

   System.out.println(value + " is two to the " + power);
}
}