

public class Reloj
{
   
   
    private int horas;
    private int minutos;
    private int segundos;
  

    /**
     * Constructor for objects of class Reloj
     */
    public Reloj()
    {
       
        horas = 0;
        minutos = 0;
        segundos = 0;
        
    }
    
    public void visualizar()
    {
        System.out.print (horas+":"+minutos+":"+segundos);
        
        
     }
     
    public void actualizarHora()
 
     {   horas+=1;
        minutos+=1;
        segundos+=1;
       
     }
        
     
      
      
      public void andar() {
          while(hora<24) {
              
              segundos=segundos+1;
              if(segundos==60) {
                  segundos=0;
                  minutos=minutos+1;
                  if(minutos==60) {
                      minutos=0;
                      horas=horas+1;
                       }
                       
                   }
                   System.out.println(horas+":"+minutos+":"+segundos);
             }
             
             
         public void muestra(){
                 System.out.println(horas+":"+minutos+":"+segundos);
                 
                  
                      
      
      
         
          
          
      
     }
      
      
      
      
      
        

    

}