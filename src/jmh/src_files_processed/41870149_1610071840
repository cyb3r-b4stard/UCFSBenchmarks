package ControllLayer;
import ModelLayer.*;
import java.util.*;

public class SalgCtr
{
    private static SalgCtr instance; 
    private VareCtr vCtr;
    private SalgCtr()
    {
        
    }    
    public static SalgCtr getInstance() 
    {
        if(instance == null)
        {
            instance = new SalgCtr();
        }
        return instance;
    }
    
    public Vare getVare(String stregkode) 
    { 
        System.out.println(stregkode);
        return VareCtr.getInstance().findVare(stregkode);
    }   
  
    public void addVare(Vare v)
    {
        vCtr.addVare(v);
    }
    
    public void opretSalg(int id, String dato, String stregkode, int antal)
    {               
        Salg s = new Salg(id, dato);    
        Vare v = new Vare();
        System.out.println("sverkes print" +VareCtr.getInstance().findVare(stregkode);
        DelSalg d = new DelSalg(antal, v);
        s.addDelSalg(d);
        SalgCon.getInstance().addSalg(s);
        System.out.println("Salg: " + id + ", er oprettet.");
        System.out.println("Dato: " + dato);
    }
}