import java.util.*;

public class Ambtenaar {
    private boolean snel;
    private ArrayList<Dienst> kanUitvoeren;
    public static final int MAXAANTALDIENSTEN=3;
    
    public Ambtenaar(boolean snel) {
        this.snel = snel;
        kanUitvoeren = new ArrayList<Dienst>();
    }
           
    public void voegDienstToe(Dienst dienst) {
        if (kanUitvoeren.size()<MAXAANTALDIENSTEN && dienst !=null)
        kanUitvoeren.add(dienst);
        
    }
    
    private Dienst zoekDienst(String dienstNaam) {
        for (Dienst d:kanUitvoeren) {
            if (d.getNaam().equalsIgnoreCase(dienstNaam)) return d;
            else return null;
    }
    
    public boolean kanUitvoeren(String dienstNaam) {
        return zoekDienst(dienstNaam) !=null;
    }
    
    public int voerDienstUit(String dienstNaam) {
        return 0;
    }
}