import java.io.*;
import java.util.Scanner;

public class hw2
{
    public static void main (String[] args)
    {
        Scanner scan = new Scanner(System.in);
        
        System.out.println("Please give the radius of the sphere");
        double radius = scan.nextDouble();
        
        System.out.println("The diameter of the sphere is: " + (radius*2));
        System.out.println("The circumference of the sphere is: " + (Math.PI*radius*2));
        System.out.println("The surface area of the sphere is: " + (Math.PI*4*(radius*radius));
        System.out.println("The volume of the sphere is: " + ((Math.PI*4*(radius*radius*radius)))/3);
    }
}