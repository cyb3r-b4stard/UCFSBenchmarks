                     int buttonIndex = event.getKeyCode();
                     
                     changeCclor(keyJButtons[ButtonIndex]);
                    
                 }
                    {
                        resetColor();
                    }
                    public void keyTyped(keyEvent event)
                    {
                    }
                    
