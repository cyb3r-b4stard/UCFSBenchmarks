import java.util.*;
import javax.swing.JOptionPane;

public class NumGuessingGame
{
     
   private static Integer currNum; 
   private static Random ran = new Random(); 
   String input = JOptionPane.showInputDialog ("Enter your First Name:(lower case)");
   String input1 = JOptionPane.showInputDialog("Enter your Family Name:(lower case)");
   
   
   double FIRSTNAME = Double.parseDouble(input);
   double FAMILYNAME = Double.parseDouble(input1);
   
   JOptionPane.showMessageDialog (null," First name = " + FIRSTNAME);
   JOptionPane.showMessageDialog(null," Famliy name = " + FAMILYNAME);
   
   
     
     public static void main(String[] leet)
     {
          Integer wannaPlay = JOptionPane.showConfirmDialog(null,"Do you wish to play The Number Guessing Game?",
                                                            "Number Guessing Game",JOptionPane.YES_NO_OPTION);
          if(wannaPlay == JOptionPane.NO_OPTION || wannaPlay == JOptionPane.CLOSED_OPTION) endProgram();
          else playGame();
          
     }
     
     private static void playGame()
     {
          genNum(); 
          Integer ans = -1; 
          do
          {
               try
               {
                    ans = Integer.parseInt(JOptionPane.showInputDialog(null,"Guess a number in the interval [1,100]!" + 
                                                                       "\n<html><font color=\"red\">" + prox(ans) + "</font></html>",
                                                                       "Number Guessing Game",JOptionPane.QUESTION_MESSAGE));
               }
               catch(Exception e)
               {
                    if(ans == JOptionPane.CLOSED_OPTION || ans == JOptionPane.CANCEL_OPTION) endProgram();
                    JOptionPane.showMessageDialog(null,"Invalid guess! Try again!","Invalid guess!",
                                                  JOptionPane.WARNING_MESSAGE);
               }
          } 
          while(ans != currNum); 
          Integer again = JOptionPane.showConfirmDialog(null,"Correct! The answer was " + currNum +
                                                        "!\nPlay again?","Good job! Play again?",JOptionPane.YES_NO_OPTION);
          if(again == JOptionPane.NO_OPTION || again == JOptionPane.CLOSED_OPTION) endProgram();
          else playGame();
          
     }
     
     private static String prox(Integer guess)
     { 
          String ans = "";
          if(guess == -1);
          else if(guess == 0 | guess < -1 | guess > 100) ans = "Out of range!";
          else if(guess < currNum) ans = "Guess higher!";
          else ans = "Guess lower!";
          return ans;
     }
     
     private static void genNum()
     {
          currNum = ran.nextInt(100) + 1;
     }
     
     private static void endProgram()
     {
         System.exit(0);
        }
     
}
