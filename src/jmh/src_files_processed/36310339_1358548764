0import java.io.File; 
import java.io.FileWriter; 
import java.util.ArrayList; 
import java.util.Scanner;
public class Tarea2 {
    public static void main(String[] args) {
        Scanner entrada=new Scanner(System.in);
        ArrayList <String> productos=new ArrayList <String>();
        ArrayList <Double> precio=new ArrayList <Double>();
        int n=0;
     
             do{
                   System.out.println("Teclee el nombre del Producto:");    
                   String a=entrada.next();
                   productos.add(a);
                   System.out.println("Teclee el Precio:");
                   double b=entrada.nextDouble();
                   precio.add(b);
                
  
                } while(n<5);
                String todo= "1." +productos.get(0)+ " $" +precio.get(0)+ "\n"+
                     "2." +productos.get(1)+ " $" +precio.get(1)+ "\n"+
                     "3." +productos.get(2)+ " $" +precio.get(2)+ "\n"+
                     "4." +productos.get(3)+ " $" +precio.get(3)+ "\n"+
                     "5." +productos.get(4)+ " $" +precio.get(4);
        System.out.println(precio);
        System.out.println(productos);
       
           try
           {                  
             File map=new File("C:\Ruben\\Articulos.txt");
             FileWriter writer = new FileWriter(map);
             writer.write(todo);
             writer.close();               
           }catch(Exception k)
           {
        System.out.println("Ha ocurrido un error");
    } 
}
}
