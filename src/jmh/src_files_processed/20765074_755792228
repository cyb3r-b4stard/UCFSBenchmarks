import ecs100.*;
import java.awt.Color;

public class Spiral{
    
    /**Core
     * Construct the GUI and give it 4 buttons: Line, Square, Spiral, Clear
     * Get the Line and Clear buttons to work, as in the demo.
     * Hint: To make the colours change about the right amount,
     * we found a simple way was to set the colour to be a multiple of the numeric value of the cell, 
     * such as UI.setColor(new Color(25*mylinearray[col]));
     * 
     * Completion 
     * Get the Square button to work, as in the demo.
     * Hint: To get the colours to change the right amount for the Square (and Spiral), 
     * we used a factor of 2 (instead of 25 for the Line). 
     * But you are welcome to make more interesting colour schemes if you like.
     */
    public Spiral(){
        UI.addButton("Line", this::drawLine);
        UI.addButton("Square", this::drawSquare);
        UI.addButton("Spiral", this::drawSpiral);
        UI.addButton("Clear", this::clearScreen);
        UI.addButton("Quit", this::quitProgram);
    }
    
    public void drawLine(){
        int maxSize = 10;
        int[] lineArray = new int[maxSize];
        int count = 0;
        double size = 50;
            while (count < maxSize){  
                lineArray[count] = count*size;
                UI.drawRect(lineArray[count], 0, size, size);
                count++;
            }
    }
    
    public void drawSquare(){
       
    }
    
    public void drawSpiral(){
    }
    
    public void clearScreen(){
        UI.clearGraphics();
    }
        
    public void quitProgram(){
        UI.quit();
    }
    
    public static void main(String[] arguments){
        Spiral s = new Spiral();
    } 

}