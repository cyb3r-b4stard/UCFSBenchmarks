import java.util.*;
public class Pay
{
    public static void main (String[] args)
    {
        int hours;                
        int tax;                  
        int rate;                 
        int other;                
        Scanner input = new Scanner(System.in);
        
        System.out.println("Please enter the following information: ");
        System.out.print("Number of hours worked: ");
        hours = input.nextInt();
        System.out.print("Hourly pay rate: ");
        rate = input.nextInt();
        System.out.print("Federal tax rate (%): ");
        tax = input.nextInt();
        System.out.print("Other deductions: ");
        other = input.nextInt();
        System.out.println();
        System.out.println("Gross pay: " + (hours * rate));
        System.out.println("Deductions: ");
        System.out.println("\t Federal tax: " + (tax * (hours * rate) / 100));
        System.out.println("\t Other deductions: " + other);
        System.out.println("\t Total deductions: " + ((tax * (hours * rate) / 100) + other));
        System.out.println("Net pay: " + ((hours * rate) - (tax * (hours * rate) / 100) - other);
        
    }
}