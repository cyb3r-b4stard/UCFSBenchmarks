import java.util.*;
public class RPS
{
    public static void main (String[] arps)
    {
        Scanner keyboard=new Scanner (System.in);
        System.out.println("You are playing Rock, Paper, Scissors!");
        System.out.println("Name");
        String name = keyboard.nextLine();
        System.out.println("Today's Date");
        int date = keyboard.nextInt();
        System.out.println("Class Period");
        int period = keyboard.nextInt();
        System.out.println("How many games would you like to play");
        int games = keyboard.nextInt();
        System.out.println("You will play " + games  + " games.");
        System.out.println("Would you like to be Rock Paper or Scissors");
        System.out.println("Enter R, P, or S");
        String Player Choice = keyboard.nextLine();
        
        if(PlayerChoice.equalsIgnoreCase("r"))
            System.out.println("Rock");
        else if(PlayerChoice.equalsIgnoreCase("p"))
            System.out.println("Paper");
            
        else if(PlayerChoice.equalsIgnoreCase("s"))
            System.out.println("Scissors");
            
        else
        {
        }
    }
}