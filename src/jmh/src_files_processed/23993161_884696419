import java.util.*;

public class HW5
{
    ArrayList <Gc> enemies = new ArrayList();
    
    enemies.add(new Droid(10,10));
    enemies.add(new Ufo(0,5));
    enemies.add(new Ufo(1,2));
    enemies.add(new StarCruiser(30,23));
    enemies.add(new Droid(9,9));
    
    for (int i = 0; i <= 4; i++)
    {
        enemies.get(i).drawOnScreen();
        enemies.get(i).makeSound();
    }
    
    System.out.println();
    
    for (Gc x : enemies)
    {
        x.drawOnScreen();
        x.makeSound();
    }
}

abstract class Gc
{
    public int x;
    
    public int y;
    
    
    public abstract void drawOnScreen();
    
    public abstract void makeSound();
}

class Droid extends Gc
{   
    public Droid()
    {
        this.x = 0;
        this.y = 0; 
    }
    
    public Droid (int t1, int t2)
    {
        this.x = t1;
        this.y = t2;
    }
    
    public void drawOnScreen()
    {
        System.out.println("Drawing a droid at coordinates = " + this.x + "," + this.y);
    }
    
    public void makeSound()
    {
        System.out.println("Beep!");
    }
}

class Ufo extends Gc
{
    public double x;
    public double y;
    
    public Ufo()
    {
        this.x = 0;
        this.y = 0; 
    }
    
    public Ufo (int t1, int t2)
    {
        this.x = t1;
        this.y = t2;
    }
    
    public void drawOnScreen()
    {
        System.out.println("Drawing a ufo at coordinates = " + this.x + "," + this.y);
    }
    
    public void makeSound()
    {
        System.out.println("Vroom!");
    }
}

class Starcruiser extends Gc
{
    public double x;
    public double y;
    
    public Starcruiser()
    {
        this.x = 0;
        this.y = 0; 
    }
    
    public Starcruiser (int t1, int t2)
    {
        this.x = t1;
        this.y = t2;
    }
    
    public void drawOnScreen()
    {
        System.out.println("Drawing a starcruiser at coordinates = " + this.x + "," + this.y);
    }
    
    public void makeSound()
    {
        System.out.println("Whrrrrr!");
    }
}
