import java.util.Scanner;
public class IRS
{
    private double myIncome;
    private int myStatus;
    public IRS(int status, double income)
    {
        
    }

    public double calcTax()
    {
        if(myStatus==1)
        {
            return calcSingleTax();
        }
        else
        {
            return calcMarriedTax();
        }
    }
    
    public double calcSingleTax()
    {
        double tax = 0;
        if(myIncome <= 27050 && myIncome > 0)
        {
            tax = .15 * (myIncome);
        }
        else if(myIncome <= 65550 && myIncome > 27050)
        {
            tax = 4057.5 + .275 * (myIncome - 27050);
        }
        else if(myIncome <= 136750 && myIncome > 65550)
        {
            tax = 14645 + .305 * (myIncome - 65550);
        }
        else if(myIncome <= 297350 && myIncome > 136750)
        {
            tax = 36361 + .355 * (myIncome - 136750);
        }
        else if(myIncome > 297350)
        {
            tax = 93374 + .391 * (myIncome - 297350);
        }
        return tax
    }
    public double calcMarriedTax()
    {
        double tax = 0;
        if(myIncome <= 45200 && myIncome > 0)
        {
            tax = .15 * (myIncome);
        }
        else if(myIncome <= 109250 && myIncome > 45200)
        {
            tax = 6780.00  + .275 * (myIncome - 45200);
        }
        else if(myIncome <= 166500 && myIncome > 109250)
        {
            tax = 24393.75  + .305 * (myIncome - 109250);
        }
        else if(myIncome <= 297350 && myIncome > 166500)
        {
            tax = 41855 + .355 * (myIncome - 166500);
        }
        else if(myIncome > 297350)
        {
            tax = 88306 + .391 * (myIncome - 297350);
        }
    }
}
            