

public class Rechner
{
    private int x; 
    private int y;
    private String s;
    private String e;

   
    public Rechner()
    {
        x = 1;
        y = 5;
        s = "";
        e = "";
       
    }
    public double Summe ()
    {
    
       return x + y; 
    
    }
    public double differenz ()
    { 
        
        return x - y;
        
    }
    public double produkt ()
    {
        
        return x * y;
        
    }
    public double quotient ()
    {
  
       return x / y;
      
    } 
   public void xändern (int z)
     {
        x = z;
        
    }
    public void yändern (int a)
    {
       y = a;
        
    }
    public boolean xnegativ()
    {
        boolean b=false;
        if (x<0) {
            b = true;
        }
        return b;
    }
    public void xpositivmachen()
    {
        if (x>0)
        {
            x=x;
        }
        else
        { 
            x=x * (-1) ;
        }
        
       
    }
      public void eschreiben ()
     { 
         for (int i = 0 ; i < 10 ; i ++ ) 
         { s = s + "e";
 
        }
    }
        return s;
    

        
    
    
