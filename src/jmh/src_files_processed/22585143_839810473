/*c. static void methode ();
 *  dessine("on met ici le dessin que l'on veut réaliser,puis on met ici les coordonnées);
  
/* 2.a. La Première méthode affiche la moyenne des deux notes d'un étudiant.
 *   b. La seconde méthode peut avoir le même nom que la première puisqu'elle possède des paramètres qui sont différents et fait référence à la précédente. Cela s'appelle une surcharge.
 *   c. Bart Simpson : 2.5 sur 20
 *      Homer Simpson : 17.5 sur 100
 *     Lisa Simpson : 14.875 sur 15
  */  static void moyenne(String etudiant, double note1, double note2, int max) {
        double m = (note1 + note2) / 2.0;
        output.println(etudiant + " : " + m + " sur " + max);
    }
     
    static void moyenne() {
        moyenne("Bart Simpson", 0., 5., 20);
        moyenne("Homer Simpson", 10., 25., 100);
        moyenne("Lisa Simpson", 15., 14.75, 15);
    }
/* iii.1
*     a. output.println(dessine(ciel));
*    2. a. Cette méthode affiche le prix au kilo d'un article.
*/      
     static String etiquette(String article, double prixKilo, double poidsGramme) {
        double res = prixKilo * poidsGramme / 1000;
        return article + " : " + res + " euros";
    }
        static void etiquette () {
            String et1=etiquette("Truffes", 250., 170.);
            String et2=etiquette("Caviar", 3500., 50.);
            String et3=etiquette("Foie gras", 230., 230.);
            output.println(et1);
            output.println(et2);
            output.println(et3);
        }
        static void etiquette2 () {
            String et=etiquette("Truffes",250., 170.);
            output.println(et);
            et=etiquette("Caviar", 3500., 50.);
            output.println(et);
            et=etiquette("Foie gras", 230., 230.);
            output.println(et);
        }
        static void etiquette3 () {
            output.println(etiquette("Truffes",250., 170.));
            output.println(etiquette("Caviar", 3500., 50.));
            output.println(etiquette("Foie gras", 230., 230.));
        }
        static void etiquette4 () {
            String et1=etiquette("Truffes", 250., 170.);
            String et2=etiquette("Caviar", 3500., 50.);
            String et3=etiquette("Foie gras", 230., 230.);
            output.println(et1 +et2 +et3);
        }
/* iii.3 1. Ce sont des variables
 *       2. Ce sont des parametres.
 *       3. La 1ere ils s'agit de simplement de parametres donnés, pour le deuxieme ils s'agit des parametres abc et enfin pour le dernier il s'agit des variables d,e,f qui ont pris la valeurs de a,b,c.
 *       4.
 *       5.
 *       
 */    static void change(String a, int b, double c) {
        String d = a;
        int e = b;
        double f = c;
        a = "Hello";
        b = b * 2;
        c = 3.14;
        d = "Coucou";
        e = -1;
        f = 0.07;
    }
     
    static void testChange() {
        String a = "Bonjour";
        int b = 1;
        double c = 0.0;
        String d = a;
        int e = b;
        double f = c;
        change("Bonjour", 1, 0.0);        
        change(a, b, c);
        change(d, e, f);
    }
    static String nom () {
        output.println("Quel est votre nom ?");
        String nom=input.next();
        return nom;
    }
    static String age () {
        output.println("Quele âge avez vous ?");
        String age=input.next();
        return age;
    }
    static void nom_age () {
        String nom=nom();
        String age=age();
        output.println ("vous vous nommez " + nom +" et vous avez" + age +" ans");
    }
