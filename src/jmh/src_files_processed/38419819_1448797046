import java.util.Random;

/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### ######
 * @####### #
 */
public class BioInfo
{
    public static boolean isADN(String adn){
        boolean test = true;
        for (int i = 0; i < adn.length(); i++){
           if (adn.charAt(i) == 'a' || adn.charAt(i) == 't' || adn.charAt(i) == 'c' || adn.charAt(i) == 'g'){
               ;
            }
            else{
               test = false;
               System.out.println("Attention il y a un " + adn.charAt(i) + "!!!");
               break;
            }
        }
        return test;
    }
    
    public static int count(String adn, char atcg){
        int count;
        for(int i; i < adn.length(); i++){
            if (adn.charAt(i) == atcg){
                count++;
            }
        }
        return count;
    }
    
 /* 
  * Placez vous methodes de tests ci-dessous.
  *
  * Pour vos tests, vous pouvez vous aider des exemples suivants:
  *
  * Une courte sequence d'ADN valide
  *  String shortADN= "gatcctccatatacaacggtatctccacctcaggtttagatctcaacaacggaaccattgccgacatgagac";
  *
  * Une longue sequence d'ADN valide    
  *  String longADN= "";
  * 
  * Un petit palindrome
  *  String palindrome1="ttaggatt";
  *
  * Un autre palindrome
  *  String palindrome2="catggcactttgagcattttagccgattttacgagtttcacggtac"; 
  *
  * Une chaine qui contient un palindrome
  *  String palADN=randomString(50,"atcg")+palindrome1+randomString(100,"atc");  
  *
  * Une chaine qui n'est pas une chaine ADN
  *  String invalidADN=longADN+"z"+shortADN;
  *
  */
    public static void testIsADN(){
        String shortADN= "gatcctccatatacaacggtatctccacctcaggtttagatctcaacaacggaaccattgccgacatgagac";
        String longADN= "";
        String palindrome1="ttaggatt";
        String palindrome2="catggcactttgagcattttagccgattttacgagtttcacggtac";
        String palADN=randomString(50,"atcg")+palindrome1+randomString(100,"atc");
        String invalidADN=longADN+"z"+shortADN;
        if(isADN(shortADN) && isADN(longADN) && isADN(palindrome1) && isADN(palindrome2) && isADN(palADN) && !isADN(invalidADN)){
            System.out.println("Tout est OK");
        }
        else{
            System.out.println(isADN(shortADN));
            System.out.println(isADN(longADN));
            System.out.println(isADN(palindrome1));
            System.out.println(isADN(palindrome2));
            System.out.println(isADN(palADN));
            System.out.println(isADN(invalidADN));
        }
    }
    
    public static void testCount(){
        String noA = "tcggctgctttggctgtgcgcgtctcgctcgctggcttcggctcggt";
        String oneA = "tgtcgtcgtgcggcgcgtctcttcttgggtgatcgcgtgctgtgcgt";
        String fiveA = "gtgctgcgctgtagctgctgctgggctaaggctgtctttgcgcgcggggccccttctgcgtcagcttcgcgtgagtgtgtgtgctgg";
        if (count(noA) == 0){
            System.out.println("noA OK!");
        }
        if (count(oneA == 1){
            System.out.println("oneA OK!");
        }
        if (count(fiveA == 5){
            System.out.println("fiveA OK!");
        }
    }

  /*
  * Cette methode est utilisee pour creer palADN.
  * 
  * @pre l>0, s contient des caracteres tous differents
  * @post retourne une chaine de caractere de longueur l et composee de caracteres venant
  *       de la chaine s passee en parametre
  */
    public static String randomString(int l, String s)
    {
        Random r=new Random();
        StringBuffer str=new StringBuffer();
        for (int i=0;i<l;i++)
        {
            int n=r.nextInt(s.length());
            str.append(s.charAt(n));
        }
        return str.toString();
    }        

}