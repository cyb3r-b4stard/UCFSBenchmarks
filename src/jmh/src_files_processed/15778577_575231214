import java.io.*;
class prac19
{
    BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
    void main() throws IOException
    {
        System.out.println("Enter a two digit number:");
        int input=Integer.parseInt(br.readLine());
        int udigit=input%10;
        
        input=input/10;
        
        int tdigit=input%10;
        int sum=udigit+tdigit;
        int prod=udigit*tdigit;
        int totsum=sum+prod;
        input=(tdigit*10)+udigit
        if(totsum==input)
        System.out.println("The number is a special 2 digit no.");
    }
}
        
