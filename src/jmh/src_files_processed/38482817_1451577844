public class AdventureGame
{
    private int areaNumber;
    
    public AdventureGame()
    {
        areaNumber = 0;
    }
    
    public void areaDescription()
    {
        switch(areaNumber)
        {
            case 0 : System.out.println("You are in a cave."; break;
            default : System.out.println("You are somehwere unknwon."); break;
        }
    }   
    
    public void nextCommand(String command)
    {
        switch(command)
        {
            case "North" : areaNumber = 1; break;
            default : System.out.println("I don't understand that command."); break;
        }
    }
    
    public boolean gameOver()
    {
        if(areaNumber == 2)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
}


    