
import java util.*;

public class selectionSort
  {
      
      public static void main(String[] args) {
          
          int anzahl = 5;
          int[] zahlen = new int[anzahl];
          selectionSort objekt = new selectionSort();
          objekt.fillArray(anzahl);
          System.out.println("Array vor dem Sortieren\n" + Arrays.toString(zahlen));
        }
    private int[] fillArray(int anzahl){
      int[] zahlen = new int[anzahl];
      Random zufall = new Random();
      for (int i = 0; i < zahlen.length; i++){
       zahlen[i] = zufall.nextInt(anzahl*10);      
    
    }
    
    return zahlen;
  }
}
