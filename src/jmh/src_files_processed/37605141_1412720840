public class Week2Q12
{
   public static void main (Stringargs[])
   {
       int base= 8;
       int height= 5;
       int area;
       
       area= (base*height)/2;
       
       System.out.println ("The base value is " + base);
       System.out.println ("The height value is " + height);
       System.out.println ("The total area is " + area);
    }
}