import java.util.ArrayList;
import java.util.Iterator;
/**
 * ######### ####### #### #######################.
 * 
 * @###### (### ####) 
 * @####### (#### ############## #### ### #####)
 */
public class Verein
{
   
    private ArrayList <Mitgliedschaft>Mitglied;
   
    /**
     * Konstruktor f端r Objekte der Klasse Verein
     */
    public Verein()
    {
       Mitglied = new ArrayList<Mitgliedschaft>();
    }

    
    /**
     * F端ge ein neues Mitglied in die Mitgliederliste ein.
     * @param mitglied Infos 端ber das einzuf端gende Mitglied.
     */
    public void beitreten(Mitgliedschaft mitglied)
    {
     Mitglied.add(mitglied);
    }

   
    /**
     * @return die Anzahl der Mitglieder (Mitgliedschaft-Objekte)
     *         in diesem Verein.
     */
    public int anzahlMitglieder()
    { int index = 0;
      while (index < Mitglied.size())
        {
            index++;
        }
        return index;
   }
public void gibJahr()
{
    for (Mitgliedschaft mitglied: Mitglied)
    {
       System.out.println(mitglied.gibName() + mitglied.gibMonat());
    }
}
   
public void suchMonat(int monat)
{
    Iterator<Mitgliedschaft>sucher = Mitglied.iterator();
        while(sucher.hasNext())
        {
            Mitgliedschaft mitglied = sucher.next();
            if (mitglied.contains(monat)
            {
                System.out.println(monat);
            }
        }
}
}
