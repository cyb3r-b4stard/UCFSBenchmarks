import java.util.Scanner;
import java.util.ArrayList;
public class zoner
{
   
    public static void zonebillet(){
    int valgteZone;
    int zonePris;
    {
        

        ArrayList<String> zoner = new ArrayList<String>();
        
        zoner.add(0,"en zone");
        zoner.add(1,"to zoner");
        zoner.add(2,"tre zoner");
        zoner.add(3,"fire zoner");
        zoner.add(4,"fem zoner");
        zoner.add(5,"seks zoner");
        zoner.add(6,"syv zoner");
        zoner.add(7,"otte zoner");

        ArrayList<Integer> zonepris = new ArrayList<Integer>();
