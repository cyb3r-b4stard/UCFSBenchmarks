public class Bank extends Unternehmen{
    Kunde k1;
    Konto kto1;
    
    public Bank (String eineStadt, String eineStrasse, int eineStrassennummer, int einePostleitzahl, int eineTelefonnummer ) {
    setStadt (eineStadt);
    setStrasse (eineStrasse);
    setStrassennummer (eineStrassennummer);
    setPostleitzahl (einePostleitzahl);
    setTelefonnummer (eineTelefonnummer);
    }
    
    void kundeAnlegen(String name, String vorname,int geburtsdatum){
        k1 = new Kunde();
        k1.kundeName(name,vorname,geburtsdatum);
        int zufallszahl = (int) Math.abs(9999 * Math.random());
		k1.kundennummerErhalten( zufallszahl);
		kto1 = new Konto ();
		kto1.kundeZuweisen (k1);
      }
	void buchung (double wert) {
		String text = kto1.wertVerbuchen (wert);
		System.out.println (text);

	  }
	  
	  void kontaktdatenAnzeigen(String sachbearbeiter, String mitarbeiter){
	   sachbearbeiter = new mitarbeiter;
	   
	   }
	  
	
}