/**
 * ####### ### #### ###### #########.
 * 
 * @###### ###### ##### 
 * @####### ##/#/##
 */
public class FleaMarketCustomer
{
    private int cabbage = 2;
    private int cat = 15;
    private int turtlemeat = 23;
    private int germs = 20;
    private int shunkenhead = 14;
    int money = 0;
    int numbofitems = 0;
    int avgprice = 0;
    int totalprice = 0;
    private String name; 
    public FleaMarketCustomer(String tempname)
    {
        name = tempname;
    }

    public FleaMarketCustomer(int tempmoney) 
    {
        money = tempmoney;
    }

    public FleaMarketCustomer(String tempname, int tempmoney)
    {
        money= tempmoney;
        name = tempname;
    }

    /**
     * Reduces balance by x ammount.
     * @param amount the amount to subtract
     */

    public void buyItem(int amount)
    {
        if(money<amount)
        {
            System.out.println("get out of here you don't have enough money");
        }
        else    
        {
            money = money - amount;
            numbofitems = numbofitems + 1;
            totalprice = totalprice + money;
            avgprice = totalprice/numbofitems

        }
    }
    
    
}