import java.util.*;


public class HundredHour
   {
    public static void main (String [] args){
        

        double N3152K = 100.0;
        double N656ST = 200.0;
        double N602PS = 300.0;
        boolean FirstTest = true;
                
        System.out.println("");
        System.out.println("*********");
        System.out.println("*N3152K=1*");
        System.out.println("*N656ST=2*");
        System.out.println("*N602PS=3*");
        System.out.println("*********");
         System.out.println("Which aircraft?");
        Scanner aircraft = new Scanner(System.in);
        double aircrafttype = aircraft.nextInt();
        System.out.println("");
               
        if (aircrafttype == 1 || aircrafttype == 2 || aircrafttype == 3)
        {
            FirstTest = true;
        }
        else
        {
            FirstTest = false;
        }
        
            while (FirstTest = false)
            {
            System.out.println("");
            System.out.println("*********");
            System.out.println("*N3152K=1*");
            System.out.println("*N656ST=2*");
            System.out.println("*N602PS=3*");
            System.out.println("*********");
            System.out.println("Which aircraft?");
            Scanner aircraft = new Scanner(System.in);
            double aircrafttype = aircraft.nextInt();
            System.out.println("");
            if (aircrafttype == 1 || aircrafttype == 2 || aircrafttype == 3)
            {
            FirstTest = true;
          }
        
        }
    
        
        
    
        
        
        if (aircrafttype == 1)
            {
                FirstTest = true;
                System.out.println("The aircraft you chose has");
                System.out.print(N3152K);
                System.out.print(" hour(s) currently on it.");
            }
            else if (aircrafttype == 2)
            {
                FirstTest = true;
                System.out.println("The aircraft you chose has");
                System.out.print(N656ST);
                System.out.print(" hour(s) currently on it.");
            }
            else if (aircrafttype == 3)
            {
                FirstTest = true;
                System.out.println("The aircraft you chose has");
                System.out.print(N602PS);
                System.out.print(" hour(s) currently on it.");
            }
            else 
            {
                FirstTest = false;
                System.out.print("Please select a valid aircraft type.");
            }
        
        }
        
        
        
        
        
        System.out.println("");
        System.out.println("");           
        System.out.println("How many hours to add?");            
        Scanner addhours = new Scanner(System.in);
        double hoursadded = addhours.nextInt();
        
       
        System.out.println("");
        
        if (aircrafttype == 1)
            {
               System.out.println("That aircraft now has ");
               System.out.println(N3152K += hoursadded);           
               System.out.println("hours on it.");
               System.out.println("");
            }
            else if (aircrafttype == 2)
            {
                System.out.println("That aircraft now has ");
                System.out.println(N656ST += hoursadded);           
                System.out.println("hours on it.");
                System.out.println("");
            }
            else if (aircrafttype == 3)
            {
                System.out.println("That aircraft now has ");
                System.out.println(N602PS += hoursadded);           
                System.out.println("hours on it.");
                System.out.println("");
            }
            else 
            {
            }
        
            
        if ((hoursadded >= 90) && (hoursadded <= 100))
        
        {
            System.out.print("YOU HAVE ");
            System.out.print(100 - hoursadded);
            System.out.print(" HOURS BEFORE REQUIRED MAINTENENCE.");
        }
            else if (hoursadded >= 100 && hoursadded <= 110)
        {
            System.out.println("YOU ARE NOW IN THE 10 HOUR GRACE PERIOD OF MAINTENENCE. YOU MUST GET MAINTENCE NOW.");
        }
            else if (hoursadded >= 110)
        {
            System.out.println("THIS AIRCRAFT CANNOT BE USED COMMERCIALLY.");
        }
            else if (hoursadded < 90)
        {
            System.out.print("You can fly ");
            System.out.print(100 - hoursadded);
            System.out.print(" more hours before you need maintenence.");
        }
        
        
        System.out.println("");
    }
}