import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
public class DebugNine3 extends JApplet implements ActionListener
{
  Font aFont = new Font("TimesRoman", Font.PLAIN,20);
  JLabel theLabel = new JLabel("Press the button");
  JButton button = new JButton("Press");
  int count;
  public void init()
  {
    Container con = getContentPane();
    con.setLayout(new FlowLayout());
    con.add (button);
    con.add(theLabel);
    theLabel.setFont(aFont);
    button.addActionListener(this);
  }
  public void actionPerformed(ActionEvent e)
  {
     ++count;
     if(count%2 = 1)
       theLabel.setText(Odd);
     else
      theLabel.setText(Even);
  }
}