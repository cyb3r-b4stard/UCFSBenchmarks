        button1.addActionListener(new ActionListener(){
        public void actionPerformed(ActionEvent evt) {
            StringBuilder builder;
            String  word = search.getText();
            builder = new StringBuilder();
            String str;
            String arg;
            int i = word.length();
            BufferedReader br = null;
        try{
           br = new BufferedReader(new InputStreamReader(new FileInputStream("C:/Users/STUDENT/Desktop/daalgavar/noorog/File.txt")));
            while((str = br.readLine() )!= null){
                arg = str.toString().substring(0, i);
                if(word.equalsIgnoreCase(arg)){ 
                    search.setText(str.toString());
                    break;
                }
            }
            }catch(IOException e){
             e.printStackTrace();
            }finally{
            try{
             if(br != null) br.close();
            }catch(IOException f){
             f.printStackTrace();
           }
        }
        }
    });

