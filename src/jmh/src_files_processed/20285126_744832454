                    try{
                        File file = new File("C:/Users/STUDENT/Desktop/daalgavar/noorog/File.txt");
                        FileWriter fw = new FileWriter(file,true);
                        BufferedWriter bw = new BufferedWriter(fw);
                        bw.write("BUS_NUMBER:"+bus_number.getText()+":"+"OUT_NUMBER:"+out_number.getText()+":"+"DRIVER_NAME:"+driver_name.getText()+":"+"OUT_TIME:"+out_time.getText()+":"+"IN_TIME:"+in_time.getText());
                        bw.newLine();
                        bw.close();
                    }catch(Exception e){
                        System.out.println(e.toString());
                    }
                }
                JOptionPane.showMessageDialog(frame,"Амжилттай хадгаллаа.");
            }
            });
        
