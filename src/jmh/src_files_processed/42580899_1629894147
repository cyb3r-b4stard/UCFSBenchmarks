public class ZoekenQRSen
{
    public static final int BEGINWAARDE = 2;
    private GegevensECG ecg;

    /**
     * Constructor voor de class class ZoekenQRSen
     */
    public ZoekenQRSen()
    {

    }

    /**
     * Method voor het vinden van de QRSen
     * @return geeft de toppen terug
     */
    public double QRSen()
    {
        double [] lines = ecg.getSpanning();
       
        for (int i = BEGINWAARDE; i < lines.length; i++)
        {
            double t1;
            double t2;
            
            while ()
            {
                if (ecg.getSpanning()[i] > drempelwaarde)
                {
                    JOptionPane.showMessageDialog(null, "Kans op een R-golf"); 
                }
           
                if (ecg.getSpanning()[i] < drempelwaarde)
                {
                    JOptionPane.showMessageDialog(null, "Je hebt een R-golf");
                    t1 = ecg.getSpanning()[i + 1];
                }
       
                if (ecg.getSpanning()[i > drempelwaarde)
                {
                    t2 = ecg.getSpanning()[i - 1];
                    tijdtop = (t1 + t2) / 2;
                }
                tijdtweetoppen = tijdtop2 - tijdtop1;
            }
            topR.add(tijdtweetoppen);
            return topR;
        }
    }
    
    /**
    * Method voor het checken van de onderdrempelwaarde.
    */
    private boolean onderDeDrempelWaarde()
    {
        while (ecg.getSpanning()[i] < drempelwaarde)
        {
        
        }
    }
    
    /**
    * Method voor het checken van de bovendrempelwaarde.
    */
    private boolean bovenDeDrempelWaarde()
    {
        while (ecg.getSpanning()[i] > drempelwaarde)
        {
        
        }
    }
}