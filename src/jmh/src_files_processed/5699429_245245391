                if(m[i].getZahl()==zaehler && zaehler%2==0)
                    {
                        sp[zaehlerSP].setZwei(m[i]);
                        zaehler++;
                        zaehlerSP++;
                        break;
                    }
            }
            
        }
        
        /*for(int i=0;i<anzahl2/2;i++)
