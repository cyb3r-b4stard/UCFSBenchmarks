        for(int i=0;i<10;i++)
        {
            if((int)Math.pow(2,i)==anzahl)
            {
                anzahl2=anzahl;
                break;
            }
            if((int)Math.pow(2,i)>anzahl)
            {
                anzahl2=(int)Math.pow(2,i);
                break;
            }
        }
        
