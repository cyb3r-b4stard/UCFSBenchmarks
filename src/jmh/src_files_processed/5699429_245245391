            if( spiel < ( 4/*(anzahl2)-1 )*/)
                spiel++;
            else
                ende=true;
            
        }
        for(int i=0;i<4;i++)
        {
            
    }
    
    public static void zeigePlan(Mannschaft []m, int anzahl2)
    {
        for(int i=1;i<=anzahl2;i++)
        {
            for(int j=0;j<anzahl2;j++)
            {
                if(m[j].getZahl()==i && i%2==1)
                    System.out.println(m[j].getName());
                if(m[j].getZahl()==i && i%2==0)
                {
                    System.out.println(m[j].getName());
                    System.out.println();
                    
                }
            }
        }
    }
    public static void setzeZahlen(Mannschaft m[], int anzahl2)
    {
        for(int i=0;i<anzahl2;i++)
        {
            int nr = (int)(Math.random()*anzahl2+1);
            m[i].setZahl(nr);
        }
        
        int y=1;
        while(y!=0)
        {
          for(int i=0;i<anzahl2;i++)
          {
            for(int j=0;j<anzahl2;j++)
            {
                if(i==j)
                    continue;
                if(m[i].getZahl()==m[j].getZahl())
                    m[j].erhoeheZahl(anzahl2);
            }
          }
          y=0;
          for(int i=0;i<anzahl2;i++)
          {
            for(int j=0;j<anzahl2;j++)
            {
                if(i==j)
                    continue;
                if(m[i].getZahl()==m[j].getZahl())
                    y=1;
            }
          }
          
        }
        
        
        
    }
    
   
}