        String s=sc.nextLine(); 
        while(x!=0)
        {
            if(x==1)
            {
                System.out.println("Geben Sie den Namen von Team "+(zaehler+1)+" ein:");
                s=sc.nextLine();
                m[zaehler]=new Mannschaft(s);
            }
            if(x==2)
                m[zaehler]=new Mannschaft("FREILOS");
                zaehler++;
            if(zaehler>=anzahl)
                x=2;
            if(zaehler>=anzahl2)
                x=0;
        }
        setzeZahlen(m,anzahl2);
        System.out.println();
        System.out.println();
        System.out.println();
