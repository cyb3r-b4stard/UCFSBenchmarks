public class TeamList
{
    
    public static int teamCount = 0  ;    
    public static int maxTeams = 10 ;      
    public static String team1Name ;      
    public static String team2Name ;
    public static String team3Name ;
    public static String team4Name ;
    public static String team5Name ;
    public static String team6Name ;
    public static String team7Name ; 
    public static String team8Name ;
    public static String team9Name ; 
    public static String team10Name ;
  

    /**
     * Constructor for objects of class TeamList
     */
    public TeamList()
    {
    teamCount = 0  ;      
    team1Name = null ;    
    team2Name = null ;
    team3Name = null ;
    team4Name = null ;
    team5Name = null ;
    team6Name = null ;
    team7Name = null ;
    team8Name = null ;
    team9Name = null ;
    team10Name = null ;
    
        System.out.println(" Constructor TeamCount = " + teamCount);                
        
    }

    /**
     * Method to keep a list of all teams created
     * 
     * @param  name  name of team to be added to list of teams
     * 
     * @return   0 = normal completion   99 = error
     */
    public  static  int CountTeams(String name)
    {
        
        teamCount = teamCount + 1;
        if (teamCount >  maxTeams) {  
            System.out.println("Too many teams = " + teamCount);
            return 99;} 
        
        System.out.println(" TEAM COUNT = " + teamCount);  
        
        switch (teamCount){  
            case 1:
                team1Name = name ; 
                return 0;
             case 2:   
                team2Name = name ; 
                return 0;
             case 3:
                team3Name = name ; 
                return 0;
             case 4:
                team4Name = name ; 
                return 0;
             case 5:
                team5Name = name ; 
                return 0;
             case 6:
                team6Name = name ; 
                return 0;
             case 7:   
                team7Name = name ; 
                return 0;
             case 8:
                team8Name = name ; 
                return 0;
             case 9:
                team9Name = name ; 
                return 0;
             case 10:
                team10Name = name ; 
                return 0;    
               
                
              default:
                System.out.println(" DEFAULT = " + teamCount);
                return 99;
                
               
                
                
        }
    }
    /**
     * Method to print a list of all teams 
     * 
     * @param   
     * 
     * @return    
     */
    public  static void PrintAllTeams()
        {
    
         System.out.println(" arrived at method PrintAllTeams = " + teamCount);
        
        
        return ;
        }
    
    
    /**
     * Method to get number of teams 
     * 
     * @param  howManyTeams 
     * 
     * @return    
     */
    public  static int GetNumberOfTeams()
        {
    
        System.out.println(" arrived at method  GetNumberOfTeams =  "  +  teamCount);
                
        return  teamCount ;
        }
        
        
        
    
