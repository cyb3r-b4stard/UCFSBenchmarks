public class Kolac
{
    private String naziv;
    private double cijena;
    private int brojSastojaka;
    private String [] sastojci;

    public Kolac(String naziv, double cijena, int brojSastojaka){
        this.naziv = naziv;
        this.cijena = cijena;
        this.brojSastojaka = brojSastojaka;
        sastojci = new String [this.brojSastojaka];

    }

    public void setNaziv ( String naziv){
        this.naziv = naziv;
    }

    public String getNaziv(){
        return naziv;
    }

    public void setCijena ( double cijena){
        this.cijena = cijena;
    }

    public double getCijena(){
        return cijena;
    }

    public void setBrojSastojaka( int brojSastojaka){
        this.brojSastojaka = brojSastojaka;
    }

    public int getBrojSastojaka(){
        return brojSastojaka;
    }

    public double ukupnaCijena(int brojKomada){
        if(brojKomada < 1){
            System.out.println("Ne moze br komada biti manji od 1");
            return cijena;
        }else{
            return cijena * brojKomada;
        }

    }

    public void unesiSastojak(String sastojak){
        for(int i = 0; i < brojSastojaka; i ++){
            if(sastojci[i] == null){
                sastojci[i] = sastojak;
                return;
            }

        }
        System.out.println("Mjesto je zauzeto.");
    }

    public String nazivSastojaka(){
        String k= "";
        for( int i = 0; i <brojSastojaka; i++){
            if( sastojci[i].length() >3){
                k += sastojci[i].substring(0,3);
           
                
            }else{
               k += sastojci[i]
            }
            

        }
        return k;
    }
    public void prikazi(){
        String prikazi = "Kolac: " + naziv + ", cijena: " + cijena + 
            "eura, Sastojci: ";
        for( int i =0; i< brojSastojaka; i++){
            prikazi += sastojci[i] + ",";

        }

        System.out.println(prikazi.substring(0,prikazi.length()-1)+ ".");

    }
}