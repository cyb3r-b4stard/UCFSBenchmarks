import java.util.*;
import java.io.*;
public class Flowchart{
    public static void main(String args[])
    {
        Scanner scan=new Scanner(System.in);
          String option;
          String option1;
         option=scan.nextLine();
         option1=scan.nextLine();
        for()
             System.out.println("Have you eaten a pizza before?");
             scan.nextLine());
             if (option.equalsIgnoreCase("Yes"))
             {
        System.out.println("Congratulations!");
        break;
    }
        else if (option.equalsIgnoreCase("No"))
        {
            System.out.println("Is there a good reason why you haven't eaten one before?");
            scan.nextLine();
        if (option1.equalsIgnoreCase("Yes"))
        {
        System.out.println("Well, that really sucks.");
        break;
    }
        else if (option1.equalsIgnoreCase("No"))
        {
        System.out.println("Then go eat one!");
    }
}
}
}