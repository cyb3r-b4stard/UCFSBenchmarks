/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ### #### #####) 
 * @####### (##.# ##/#/####)
 */
public class NQ2D
{
    String [][] board;
    int n;

    public NQ2D(int NxN){ 
        board = new String [NxN][NxN];
        n = NxN;
    }

    private boolean checkCanPlaceQ(int r, int c){
        if(r < n && r >=0 && c < n && c >= 0){
            if (board[r+1][c+1] == null || board[r+1][c-1] == null || board[r][c+1] = null || board[r+1][c] = null){ 
                System.out.println("X   ");
            }else{
                System.out.println("Q   ");
            }
        }
    }
}