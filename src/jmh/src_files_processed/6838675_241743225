    /**
     * 
     */
    public boolean matchArray(boolean[] testName[])
    {
        for (int i = 0; i < 10; i++)
        {
            if (testName[i] == character[i])
            {
                return true;
            }
            else
            {
                i = i + 10;
                return false;
            }
        }
    }

    /**
     * 
     */
    public String  getName(boolean[] character[])
    {
        boolean match;
        for( i = 0; i < 27; i++ )
        {
            match = this.matchArray(allCharacters[i]);
            if (match == true)
            {
                String characterName = boolean.character.getName();
            }
        }
        return characterName;
    }

