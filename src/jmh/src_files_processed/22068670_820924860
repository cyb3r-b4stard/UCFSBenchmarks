import java.util.Scanner;

public class TeamTester
{
    int goals
    public static void main (String []args)
    {
        Scanner ask = new Scanner (System.in);
        System.out.println("Here are the teams we have listed:");
        System.out.println("#1 dortmund");
        System.out.println("#2 wolfsburg");
        System.out.println("#3 hannover");
        System.out.println("#4 bayern");
        System.out.println("#5 schalke");
        System.out.println("#6 leverkusen");
        System.out.println("Which team number are you lookin' for?");
        int team = ask.nextInt();
        if (team == 1)
        {
            german dortmund = new german();
            String name = "dortmund";
            goals = dortmund.getGoals();
        }
        if (team == 2)
        {
            german wolfsburg = new german();
            String name = "wolfsburg";
        }
        if (team ==3)
        {
            german hannover = new german();
            String name = "hannover";
        }
        if (team ==4)
        {
            german bayern = new german();
            String name = "bayern";
        }
        if (team ==5)
        {
            german schalke = new german();
            String name = "schalke";
        }
        if (team == 6)
        {
            german leverkusen = new german();
            String name = "leverkusen";
        }
        
        System.out.println("We see that " + name + "has " + ask.getGoals() + ". How many do they have now?");
        System.out.println(Bayern.move());
        System.out.println("How many goals does " + team + " have?");
        int goals1 = ask.nextInt();
        Bayern.setGoals(goals1);
        System.out.println(Bayern.getGoals());
        System.out.println("Now we're going to make an array!");
        german [] teams = new german  [6];
        teams[0] = new dortmund();
        teams[1] = new wolfsburg();
        teams[2] = new hannover();
        teams[3] = new bayern();
        teams[4] = new schalke();
        teams[5] = new leverkusen();
        for (int ct = 0; ct<teams.length; ct++)
        {
            String m = teams[ct].move();
            System.out.println("Action for team #" + (ct+1) + ": " + m + ".");
        }
    }
}