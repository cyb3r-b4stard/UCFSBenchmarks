import java.util.*;
public class Poema{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        String poema;
        int numero;
        System.out.print("Introducir numero:");
        numero=sc.nextInt();
        System.out.print("Suma de valores individuales: "+sumaValores(numero));
    }
    public static int sumaValores(int n){
        int suma=0;
        int aux=0;
        if (n<0){
            return sumaValores(suma);
        } 
        else  {
            aux= sumaValores(n%10);
            return sumaValores((n/10)+aux))
        }
    }
}