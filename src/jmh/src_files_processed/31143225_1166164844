    public void SwipeLeft()
    {
        Location loc = getLocation().getAdjacentLocation(-90);
        while(getGrid().isValid(loc)==true)
        {
            if(getGrid().get(loc) == getGrid().get(getLocation()))
            {
                moveTo(loc);
                putSelfInGrid(getGrid() Four,loc);
                loc = getLocation().getAdjacentLocation(-90);
            }
            else
            {
            moveTo(loc);
            loc = getLocation().getAdjacentLocation(-90);
        }
        }
    }

