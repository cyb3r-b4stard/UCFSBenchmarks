
/**
 * ### ### ###### ##### #### #### ########## ### ############## ### ##### #### #########.
 * 
 * @###### (#.#######) 
 * @####### (## ######## ####)
 */
public class Konto
{
    private int _saldo;

    /**
     * Anfanfs Wert vom Saldo wird initialisiert
     */
    public Konto()
    {
        _saldo = 0;
        zahleEin(int betrag);       
    }

    /**
     * Damit wird Beträge eingezahl und Saldo erhöht
     * 
     * @param  betrag  ist der Geldbetag 
     * @return    zeigt die Summierung auf Konto 
     */
    public void zahleEin(int betrag)
    {
        _saldo = _saldo + betrag;
      
    }
    /**
     * Damit wirden Beträge abgehoben Saldo vermindert
     * 
     * @param  betrag  ist der Geldbetag 
     * @return    zeigt die Summierung auf Konto 
     */
    public void hebeAb(int betrag)
    {
        _saldo = _saldo - betrag;
      
    }
    /**
     * Endbetrag Anzeigen
     */
    public int gibSaldo()
    {
        
        return _saldo;
    }
}