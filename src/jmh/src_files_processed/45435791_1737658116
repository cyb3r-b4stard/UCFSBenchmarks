public class Bus{
    Circle Wheel = new Circle();
    Circle Wheel2 = new Circle();
    Square Bus = new Square();
    Square Bus2 = new Square();
    Square Bus3 = new Square();
    Square Window = new Square();
    Square Window2 = new Square();
    Square Window3 = new Square();
    
    /** Constructors for objects of class Bus **/
    public Bus(int xpos, int ypos){
        Bus.changeSize(100);
        Bus.changeColor("blue");
        Bus.setxy(xpos+50, ypos-50);
        return (xpos), ypos);
        Bus2.changeSize(100);
        Bus2.changeColor("blue");
        Bus2.setxy(xpos+5, ypos-50);
        Bus3.changeSize(100);
        Bus3.changeColor("blue");
        Bus3.setxy(xpos-50, ypos-50);
        Wheel.changeSize(50);
        Wheel.changeColor("black");
        Wheel.setxy(xpos+95, ypos+10);
        Wheel2.changeSize(50);
        Wheel2.changeColor("black");
        Wheel2.setxy(xpos-45, ypos+10);
        Window.changeSize(40);
        Window.changeColor("black");
        Window.setxy(xpos-25, ypos-40);
        Window2.changeSize(40);
        Window2.changeColor("black");
        Window2.setxy(xpos+25, ypos-40);
        Window3.changeSize(40);
        Window3.changeColor("black");
        Window3.setxy(xpos+75, ypos-40);
    }
    /** Bus Movement **/
    public void slowMoveHorizontal(int distance){
        /** Each object moves indipendently **/
        int delta;
        
        if(distance < 0){
            delta = -1;
            for(int i = 0; i > distance; i--){
                Bus.moveHorizontal(delta);
                Bus2.moveHorizontal(delta);
                Bus3.moveHorizontal(delta);
                Wheel.moveHorizontal(delta);
                Wheel.moveHorizontal(delta);
                Window.moveHorizontal(delta);
                Window2.moveHorizontal(delta);
                Window3.moveHorizontal(delta);
            }
        }
        else{
            delta = 1;
            for(int i = 0; i < distance; i++){
                Bus.moveHorizontal(delta);
                Bus2.moveHorizontal(delta);
                Bus3.moveHorizontal(delta);
                Wheel.moveHorizontal(delta);
                Wheel2.moveHorizontal(delta);
                Window.moveHorizontal(delta);
                Window2.moveHorizontal(delta);
                Window3.moveHorizontal(delta);
            }
        }
    }
    /** Detect When Bus Has Gone Off Screen Reset Its Position **/
    public void main(String[] args){       
    }
}