public class SCHLAEGER extends RECHTECK
{   
    private int deltaX;
    private int deltaY;
    private int M_x;
    private int M_y;
    private String "oben";
    private String "unten";
    

    public SCHLAEGER(int M_x, int M_y)
    { 
        super();
        this.setzeFarbe("weiss");
        this.setzeGroesse(10, 50);
        this.setzeMittelpunkt(M_x, M_y);
        this.deltaY=1;
        this.deltaX=0;
       
    }

    public void bewegen(){
        verschiebenUm(deltaX,deltaY);
    }

    public void verringeredeltaY() {
        this.deltaY=this.deltaY-1;
    }

    public void erhoehedeltaY() {
        this.deltaY= this.deltaY+1;
    }

    public void setzedeltaX(int dXneu) {
        this.deltaX=dXneu;
    }

    public void setzedeltaY(int dYneu) {
        this.deltaY=dYneu;
    }

    public void stopp(String wo) {
        if (wo == "oben") {
            this.setzeMittelpunkt(M_x, 45); 
            this.setzedeltaY(0);}
        else if (wo == "unten") {
            this.setzeMittelpunkt(M_x, 555);
            this.setzedeltaY(0);}
    }

}