
/**
 * ########### ### #### ### ###### #####.
 * 
 * @###### (### ####) 
 * @####### (#### ############## #### ### #####)
 */
public class StringSet
{
    private String[] setArray;

    public StringSet(int number ){
        if (number < 2){ 
            setArray = new String[2];
        }
        else
        {
            setArray = new String[number];
        }
    }

    /**
     * Mit dieser Methode kein ein Element in den Array eingefügt werden. Die Vorraussetzung dafür ist das der Wert des Elementes nicht = null ist und auch ein leerer Wert ist nicht zulässig.
     * Wenn der das Element schon vorhanden ist printet der Automat "Ist schon vorhanden!" aus und returned false. Wenn das Array schon voll ist gibt der Automat die Fehlermeldung "Das Array ist voll!" 
     * und returned ebenfalls false.
     */
    public boolean add(String value)
    {
        if (value == null){
            System.out.println("Bitte einen richtigen Wert eingeben!");
            return false;
        }
        if (value.isEmpty()){
            System.out.println("Sie müssen einen hier einen Wert eingeben!");
            return false;
        }
        for(int i = 0; i < setArray.length; i++)
        {
            if(setArray [i]== null)
            {
                setArray[i] = value;
                System.out.println("Erfolgreich!");
                return true;
            }
            else
            if(setArray [i]== value)
            {
                System.out.println("Ist schon vorhanden!");
                return false;

            }
        }
        System.out.println("Das Array ist voll!");
        return false;
    }

    /**
     *Mehtode mit der ein Element aus dem Array entfernt wird, sofern es vorher im Array vorhanden war.
     */
    public boolean remove(String value)
    {
        if (value == null){
            System.out.println("Ist nicht vorhanden!");
            return false;
        }
        if (value.isEmpty()){
            System.out.println("Es kann nichts entfernt werden!");
            return false;
        }
        for(int i = 0; i < setArray.length; i++)
        {
            if(setArray [i]== value)
            {
                setArray[i] = null;
                System.out.println("Erfolgreich entfernt!");
                return true;
            }
        }
        System.out.println("Ist nicht im Array vorhanden!");
        return false;
    }

    /**
     *Methode zum überprüfen ob ein bestimmtes Element schon im Array vorhanden ist.
     */
    public boolean contains(String value)
    {
        if (value == null){
            System.out.println("Ist nicht im Array drinn!");
            return false;
        }
        if (value.isEmpty()){
            System.out.println("ACHTUNG: Hier müssen sie etwas eingeben!");
            return false;
        }
        for(int i = 0; i < setArray.length; i++)
        {
            if(setArray [i]== value)
            {

                System.out.println("Ist im Array drinne!");
                return true;
            }
        }
        System.out.println(value + " ist nicht vorhanden!");
        return false;
    }

    /**
     * 
     */
    public String toString() {
        String ergebnis = "";
        for(int i = 1 ; i < setArray.length; i++) {
            ergebnis += ergebnis + ""{,}" " + setArray[i];
        }
        return ergebnis;

    
    
    }
}