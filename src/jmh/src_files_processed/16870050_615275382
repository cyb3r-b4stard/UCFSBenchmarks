import java.util.*;
/**
 * ######## ##### ######## - ##### # ########### ## ### ##### ####
 * 
 * @###### (#### #### ####)
 * @####### (####### ###### ## #### ####)
 */
public abstract class Building
{
    abstract public int rent();
    abstract public int tax();
  
    
     public static void sortByRent(List<Building> buildings){
         Collections.sort(buildings,new RentCompare());
        }
     public static void sortByTax(ArrayList<Building> buildings){
          Collections<Building>.sort(buildings);
        }
     public static void sortByProfit(List<Building> buildings){
         
          Collections.sort(buildings, new Comparator<Building>()
          {
              public int compare(Building b1, Building b2){
                 int profit1 = b1.rent() - b1.tax();
                 int profit2 = b2.rent() - b2.tax();
                  
                  if (profit1 == profit2){
                      return 0;
                    }
                    
                  if (profit1 > profit2){
                        return -1;
                    }
                 return 1;
                    
                  
                }
              
            });
         
        }
        
   
    
    
}