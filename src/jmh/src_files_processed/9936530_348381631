
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (###### ######) 
 * @####### (##.##.##)
 */
public class Mensch
{
    private int groesse;
    private String haarfarbe;
    private String augenfarbe;
    private int haarlaenge;
    private int schuhgroesse; 
    private int gewicht;
    private String vorname;
    private String nachname;
    /**
     * Constructor for objects of class Mensch
     */
    public Mensch()
    {
        groesse = 180;
        haarfarbe ="schwarz";
        augenfarbe ="braun";
        haarlaenge = 10;
        schuhgroesse = 43;
        gewicht = 73;
        vorname = "levent";
        nachname = "guelmez";
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public int getGroesse()
    {
        return groesse;
    }
    
    public void setgroesse (int neueGroesse)
    {
        groesse=neueGroesse;
    }
    
    
    
    public String getHaarfarbe ()
    {
        return haarfarbe;
    }    
    
    public void setHaarfarbe (String neueHaarfarbe)
    {
        haarfarbe=neueHaarfarbe;
    }     
     
    
    
    public String getAugenfarbe ()
    {
        return augenfarbe;
    }    
    
    public void setAugenfarbe (String neueAugenfarbe)
    {
        augenfarbe=neueAugenfarbe;
    }
    
    
    
    
    public int getHaarleange ()
    { 
        return haarlaenge;
    }
       
    public void setHaarlaenge(int neueHaarlaenge)
    {
        haarlaenge=neueHaarlaenge;
    }
    
    
    
    
    public int getSchuhgroesse ()
    {
        return schuhgroesse;
    }

    public void setSchuhgroesse(int neueSchuhgroesse)
    {
        schuhgroesse=neueSchuhgroesse;
    }
    
    
    
    public int getGewicht ()
    {
        return gewicht;
    }
  
    public void setGewicht (int neuesGewicht)
    {
        gewicht=neuesGewicht;
    }    
    
    
    public String getbenutzername ()
    {
        return vorname.substring (0, 3) + nachname.substring (0,3);
    }
    void ausgabeDaten()
    {
        System.out.printIn("Hier kommt die Ausgabe");
        System.out.printIn("Vorname:Levent"+"Nachname:Gülmez"+"Augenfarbe:Braun"+"Haarfarbe:Schwarz"+"Schuhgröße:43")
}    
    
    
    