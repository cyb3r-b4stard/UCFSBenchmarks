public class Person
{
    protected SIM sim[];
    
    public Person()
    {
        sim = new SIM[2];
    }

    /*
     * a)
     * meldet die übergebene SIM bei der Person an
     * jede Person kann max. 2 SIM haben
     * eine private und eine geschäftliche
     */
    public void anmelden(SIM simNeu)
    {
        if ((sim[0] == null) && (sim[1] == null))
        {
            if (simNeu.getPrivat() == true)
            {        
                if ((sim[0] == null) && ((sim[1]== null) || (sim[1].getPrivat() == false)))
                {
                    sim[0] = simNeu;
                }
                else
                {
                    if ((sim[1] == null) && ((sim[0]== null) || (sim[0].getPrivat() == false)))
                    {
                        sim[1] = simNeu;
                    }
                }
            }
            else
            {
                if (simNeu.getPrivat() == false)
                {        
                    if ((sim[0] == null) && ((sim[1]== null) || (sim[1].getPrivat() == true)))
                    {
                        sim[0] = simNeu;
                    }
                    else
                    {
                        if ((sim[1] == null) && ((sim[0]== null) || (sim[0].getPrivat() == true)))
                        {
                            sim[1] = simNeu;
                        }
                    }
                }
                else
                {
                    System.out.println("Der Privat Wert " + sim.getPrivat() + " ist bereits vorhanden!"););
                }
            }
            
        }
        else
        {
            System.out.println("Der Kunde hat bereits 2 SIM!");
        }
        
    }

    
    /*
     * b)
     * tätigt einen anruf
     * bsp: 1623,17
     * anruf nur von einer sim
     * die minuten erhöht sich um 17
     */
    public void anrufen(int zeit, int min)
    {
        
    }
    

}