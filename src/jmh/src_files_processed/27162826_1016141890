public class Computer
{
    private String name;
    private int verkaufsPreis;
    private USBStick u0;
    private USBStick u1;
    private int summe;

    public Computer(String name, USBStick u0, USBStick u1, int verkaufsPreis)
    {
        setName(name);
        setUSBStick0(u0);
        setUSBStick1(u1);
        setVerkaufsPreis(verkaufsPreis);
    }

    public void print()
    {
        System.out.println("\tComputer");
        System.out.println(" Name:\t\t\t" + name);
        System.out.println(" USBStick1:\t\t" + u0);
        System.out.println(" USBStick2:\t\t" + u1 );
        System.out.println(" Verkaufspreis:\t\t" + verkaufsPreis);
    }

    public void setName(String name)
    {
        this.name = name;
    }

    public String getName()
    {
        return name;
    }

    public void setVerkaufsPreis(int verkaufsPreis)
    {
        if(verkaufsPreis < 200)
        {
            System.out.println("Der Verkaufspreis muus größer gleich 200 sein!\n");
        }
        else
        {
            this.verkaufsPreis = verkaufsPreis;
        }
    }

    public int getVerkaufsPreis()
    {
        return verkaufsPreis;
    }

    public void setUSBStick0(USBStick u)
    {
        if(u0 == u)
        {
            System.out.println("An diesem USBAnschluss ist schon ein USBStick angeschlossen");
        }
        if(u0 == null)
        {
            u0 = u;
        }
    }

    public void setUSBStick1(USBStick u)
    {
        if(u1 == u)
        {
            System.out.println("An diesem USBAnschluss ist schon ein USBStick angeschlossen");
        }
        if(u1 == null)
        {
            u1 = u;
        }
    }

    public void USBStick1Entfernen()
    {
        this.u0 = null;
    }

    public void USBStick2Entfernen()
    {
        this.u1 = null;
    }

    public void summeVerkaufsPreis()
    {
        int summeVerkaufsPreis = verkaufsPreis;
        if(u0 != null && u1 != null)
        {
            summeVerkaufsPreis = u0.getVerkaufsPreis() + u1.getVerkaufsPreis() + verkaufsPreis;
        } 
        if(u0 == null && u1 != null)
        {
            summeVerkaufsPreis = u1.getVerkaufsPreis() + verkaufsPreis;
        }
        if(u0 == null && u1 == null)
        {
            summeVerkaufsPreis = verkaufsPreis;
        }
        return summeVerkaufsPreis
    }
}
