import de.htw.saarland.stl.Stdin;
/**
 * ### ###### ######### ###### ### ###### #####.
 * 
 * @###### (#### ######) 
 * @####### (#.##.####)
 */
public class TestLager
{
    private static final int PROGRAMM_BEENDEN                 = 0;
    private static final int ARTIKEL_ERSTELLUNG               = 1;
    private static final int ARTIKEL_ERSTELLUNG_MIT_0_BESTAND = 2;
    private static final int ARTIKELBEZEICHNUNG_AENDERN       = 3;
    private static final int ZUGANG                           = 4;
    private static final int ABGANG                           = 5;
    private static final int ARTIKELDETAILS_ANZEIGEN          = 6;
    private static final int INKREMENTIERUNG_PREIS_IN_PROZENT = 7;
    private static final int DEKREMENTIERUNG_PREIS_IN_PROZENT = 8;
    
    
    
    public static void main(String[] args) 
    {
      
        

        
        
    }
    
    
    private void menueAusgabe(int position)
    {
        System.out.println();
        System.out.print(PROGRAMM_BEENDEN                 +": Beenden \n"); 
        if(position == 0)
        {
            System.out.print(ABFRAGE_LAGERNAME                + ": Wie wollen Sie das Lager benennen?; \n")
        }
        
        else if(position == 1)
        {
            System.out.print(ABFRAGE_ARTIKELANZAHL            + ": Wie viele Artikeltypen soll das Lager fassen koennen?\n")
        }
        System.out.print
        (                PROGRAMM_BEENDEN                 + ": Beenden \n" +
                         ARTIKEL_ERSTELLUNG               + ": Neuen Artikel erstellen; \n" +
                         ARTIKEL_ERSTELLUNG_MIT_0_BESTAND + ": Neuen Artikel mit 0 Bestand erstellen; \n" +
                         ARTIKELBEZEICHNUNG_AENDERN       + ": Artikelbezeichnung aendern; \n" +
                         ZUGANG                           + ": Erhoehe den Bestand; \n" +
                         ABGANG                           + ": Vermindere den Bestand; \n" +
                         ARTIKELDETAILS_ANZEIGEN          + ": Artikeldetails anzeigen; \n" +
                         INKREMENTIERUNG_PREIS_IN_PROZENT + ": Artikelpreis in Prozent erhoehen; \n" +
                         DEKREMENTIERUNG_PREIS_IN_PROZENT + ": Artikelpreis in Prozent verringern; \n" 
                                                          + "Waehlen Sie eine Nummer: "
        );

        return Stdin.readlnInt();
    }        

}    

