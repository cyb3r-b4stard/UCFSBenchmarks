    public school(int studentnumber,int gender,int grade)
    {
      Studentnumber = studentnumber;
      Gender = gender;
      Grade = grade;
      
    }
    /**
     * studentcard
     */
    public void studentCard(int time)
    {
        studentcard.showTime();
        if(time<=30){
            System.out.println("You have"+(30-time)+" days of time.");
        }
        else{
            System.out.println("You borrow time exprired.");
        }        
}
