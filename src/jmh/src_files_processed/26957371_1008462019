/*
 * ######### # ###### #### #### ### ####### ## ##### # ###### ####.
 * ### #### ## ######### ## ###### #### ### ###### ####### (######## #### *).
 */
public class GuessWord {
    public static void main (String args []) {
        String answer;
        String words[] = {
                "word","moon","unknown","understand","output","scientific","dog","bone","keys","college","premium","perforation","barcode","don bosco","diary"};
        int r = (int) (Math.random()*15);
        System.out.println(r);
        System.out.println(words[r]);

        char c;
        for(int i=0; i<words[r].length(); i++) {
            c = words[r].charAt(i);
            if(c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
                c = '*';
            }
            System.out.print(c);
        }

        do{
            System.out.println("Enter your answer");
            answer = Keyboard.readString();
            if(words[r].equalsIgnoreCase(answer) == true) {
                System.out.println("You have guessed the word");
            } else if(words[r].equalsIgnoreCase(answer) == false){
                System.out.println("Try again");
            }
        }while(words[r].equalsIgnoreCase(answer) == false);
    }