
/**
 * ##### # ########### ## ##### ############## ####.
 * 
 * @###### ######### ####### 
 * @####### ##.##.####)
 */
public class Formelsammlung
{
public double p;
public double q;
public double diskriminante;
public boolean x1;
public double Lösung = -p/2 + diskriminante;

/**
 * p-q-Formel
 */
public double pqFormel(double p, double q, boolean x1)
{
   p = p;
   q = q;
   x1 = x1;
   return Lösung;
    if (diskriminante > 0) {
       x1 = -p/2 + diskriminante;
       x2 = -p/2 - diskriminante;
    }
    if (diskriminante = 0) {
        x1 && x2 = -p/2;
    }
    else {
        system.out.println ("Bitte positive Dsikriminante eingeben");
    }
}
/**
 * p ändern.
 */
public void setzep (int p)
{
    this.p = p;
}
}