import java.util.*; 
public class PT_ProgA
{
  public static void main()
  {
   Scanner scan;
   scan = new Scanner (System.in);
   
   double r = 0.0;
  
   
   double A = 4*3.14:(r*r);
   
   A = 4*3.14:(r*r);
   
   Sytsem.out.println(" Th value of r is: ");
   r = scan.nextDouble();
   
   A = 4*3.14:(r*r);
   
  System.out.println(" The value of A is: " +A);
  
  }
}