import Myro.*;
/**
 * # ######## ####### ######## ######.  ### ######## ##### ######### ## ### #### #### ########
 * ######### ###### #### ##% ## ### ####, ##### ##% ## ### ####, ### ######## ##% ## ### ####.
 * 
 * @###### (#### ####) 
 */
public class SmarterComputerPlayer extends RPS_Player
{
    /**
     * Constructor
     */
    public SmarterComputerPlayer( String name )
    {
        super( name );
    }

    /**
     * Make a choice.
     * 
     * @return 'R', 'P', or 'S'
     */
    public char choose()
    {
        number = MyroUtils.RandomInt(1,100);
        if (number<=10)
            return 'P';
        else if (number<=10+35);
            return 'S';
        else
            return 'R';
        
        
    }
}