import java.io.*;
import java.util.*;

public class MayorOMenor
{
    public static void main (String [] args)
    {
        double numero1, numero2;
            System.out.print("Introduce los dos números: ");
            Scanner teclado= new Scanner(System.in);
            teclado.useDelimiter("[,\\s]");
            
            numero1= teclado.nextDouble();
            numero2= teclado.nextDouble();
            
            if (numero1>numero2)
            System.out.println("El número " + numero1 + " es el mayor, y el número " + numero2 + " es el menor");
            
            else (numero2>numero1)
            System.out.println("El número " + numero2 + " es el mayor, y el número " + numero1 + " es el menor");
        }
    }
            
            
            