import java.util.ArrayList;

/**
 * ##### ## ######### # ##.
 * 
 * @###### ######
 * @####### ######## ####/####/####/####
 */
  
public class CD 
{
  private String artist;
  private String title;
  private int numTracks;
  private ArrayList<Track> tracks;
  private NumberDisplay minutes;
  private NumberDisplay seconds;
  private String displayString;
  
  /**
   *  Creates a new CD object with a capacity of 15 tracks (maximun)
  */
  public CD(String a, String t)
  {
    artist = a;
    title = t;
    tracks = new ArrayList<Track>();
    numTracks = 0;
    
    minutes = new NumberDisplay(60);
    seconds = new NumberDisplay(60);
    updateDisplay();
  }

  /**
   *  Returns the artist of the CD
  */
  public String getArtist()
  {
    return artist;
  }

  /**
   *  Returns the title of the CD
  */
  public String getTitle()
  {
    return title;
  }
  /**
   *  Adds track t to the array tracks & updates the count of tracks
   */
  public void addTrack(Track t)
  {
    if (numTracks == tracks.size())
        System.out.println("CD is full, cannot add more tracks!");
    else {
         tracks.add(t);
  }

  }
  
  /**
   *  Returns the title of the longest track
   */
  public String longestTrack() {                      
     int longestTrackIndex = 0;
     int index = 1;
     
     while(index<numTracks){
         if (index > tracks.size())
         longestTrackIndex = index;
         index++;
        }
     return longestTrack(); 
  }
    /**
     * This method should get called once every minute - it makes
     * the clock display go one minute forward.
     */
    public void timeTick()
    {
        seconds.increment();
        if(seconds.getValue() == 0) {  
            minutes.increment();
        }
        updateDisplay();
    }

    /**
     * Set the time of the display to the specified hour and
     * minute.
     */
    public void setTime(int minute, int second)
    {
        minutes.setValue(second);
        updateDisplay();
    }

    /**
     * Return the current time of this display in the format HH:MM.
     */
    public String getTime()
    {
        return displayString;
    }
    
    /**
     * Update the internal string that represents the display.
     */
    private void updateDisplay()
    {
        displayString = minutes.getDisplayValue() + ":" + 
                        seconds.getDisplayValue();
    }
  public String totalRunningTime() {                      
     int total = 0;
     for (int index =0; index < tracks.length; index ++) {
         
     total = total + tracks[index]
     
 
 
     return total; 
  }
}
