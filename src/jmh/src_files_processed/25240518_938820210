public class Exercise8
{
    Random generator = new Random();
    int secretNum = generator.nextInt(10) + 1;  
    Scanner in = new Scanner(System.in);
    boolean guessedIt = false;

    System.out.println("You have three chances to guess the secret number!");
    for (int i = 1; i < 4; i++)
    {
        System.out.print("Guess #" + i + ": ");
        userGuess = in.nextInt();
        if (userGuess == secretNum)
        {
            System.out.println("You got it!");
            guessedIt = true;
            break;
        }
        else
        {
            System.out.println("Sorry, that's not it!")
        }
    }
    if (guessedIt = true)
    {
        System.out.println("Congratulations!");
    }
    else
    {
        System.out.println("Sorry! The number you were trying to guess was " + secretNum);
    }
}