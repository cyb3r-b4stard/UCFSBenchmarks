
import java.util.Scanner;

public class HowToWhileLoop
{
    public static void main (String[] args)
    {
        Scanner inp = new Scanner (System.in);
        
        boolean Play = true;
        while (Play)
        {
            System.out.println("Fun Fun Fun");
            System.out.println("Having fun? Enter 1 for yes. Enter 2 for no");
            int userinp = inp.nextInt();
            
            if (userinp == 1)
            {
                Play = true;
            }
            else if (userinp == 2)
            {
                Play = false;
            }
            else
            {
                System.out.println("You pressed the wrong button so you get to keep having fun!!!");
                Play = true;
            }
        }
        
        System.out.println("Good bye");
        
        int x = 1;
        while (x <= 10)
        {
            System.out.println("x is less than 10. x = " + x);
            x = x + 1;
        }
        System.out.println("x is greater than 10. x = " + x);
        
        System.out.println("");
        System.out.println("");
        System.out.println("");
        x = 1
        
        while (x<100)
        {
            x *= 2
        }
    }
}