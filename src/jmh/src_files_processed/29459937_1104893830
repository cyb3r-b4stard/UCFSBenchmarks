
/**
 * ##### # ########### ## ##### ################### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */import java.util.*;
public class BeginProgramRevised{
    public static int multiplication(){
        int number1;
        int number2;
        int product;
        Scanner input = new Scanner (System.in);
        
        System.out.println("Enter a number");
        number1 = input.nextInt();
        
        System.out.println("Enter another number");
        number2 = input.nextInt();
        
        product = number1 * number2;
        System.out.println("the product is " + product);
                      
        return product;
    }
    public static int toFahrenheit(){
        int c;
        Scanner input = new Scanner (System.in);
        
        System.out.println("Enter temperature in celsius");
        c = input.nextInt();
        
        result = (c*9)/5+32
        System.out.println("it equals to " + result + " Degrees");
        
        return result;
    }
    public static void main (){
        multiplication();        
    }
        public static void toCelsius(){
        int f = 60;
        System.out.println("60 Degrees equals " + ((f-32)*5/9) + " Celsius");
    }
    public static void bacteria(){
        int i = 3;
        int t = 4;
        System.out.println("3 bacteria after 4 hours will result in " + (i*Math.pow(2,t)) + " bacteria");
    }
    public static void change(){
        int amount = 130;
        int q = amount/25;
        int d = (amount-q*25)/10;
        int n = (amount-q*25-d*10)/5;
        int p = amount-q*25-d*10-n*5;
        System.out.println("130 cents equals " + q +" quarters " + d + " dimes " + n + " nickels " + p + " pennys");
    }
    public static void cookie(){
        int number = 200;
        int barton = number/72;
        int box = (number-(barton*72))/12;
        int single = number-(barton*72)-(box*12);
        System.out.println("total cost for " + number + " cookie is " + ((barton*864)+(box*180)+(single*25)));
    }
    public static void distance(){
        int x = 3;
        int y = 4;
        System.out.println("distance from point (3,4) to the origin is " + Math.sqrt(Math.pow(x,2)+Math.pow(y,2)));
    }
    public static void dayOfWeek(){
        int m = 8;
        int d = 18;
        int y = 1999;
        int y0 = y-(14-m)/12;
        int x = y0+y0/4-y0/100+y0/400;
        int m0 = m+12*((14-m)/12)-2;
        int d0 = (d+x+(31*m0)/12)% 7;
        if (d0==0){
        System.out.println("August 18, 1999 is a Sunday");
    }
    else if (d0==1){
        System.out.println("August 18, 1999 is a Monday");
    }
    else if (d0==2){
        System.out.println("August 18, 1999 is a Tuesday");
    }
    else if (d0==3){
        System.out.println("August 18, 1999 is a Wednesday");
    }
    else if (d0==4){
        System.out.println("August 18, 1999 is a Thursday");
    }
    else if (d0==5){
        System.out.println("August 18, 1999 is a Friday");
    }
    else if (d0==6){
        System.out.println("August 18, 1999 is a Saturday");
    }
    else{
        System.out.print("Invalid");
    }
    }
}