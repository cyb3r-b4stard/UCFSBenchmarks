/**
 * ########### ### ####### ## ##### ####
 */
public class test extends GUIManager {
    private final int WINDOW_WIDTH = 400;
    private final int WINDOW_HEIGHT = 400;
    private JButton sunny;
    private JButton saturday;
    private JButton healthy;
    private JTextField someField = new JTextField( 10 );
    private JButton replace = new JButton("Replace");
    private JTextField toReplace = new JTextField(4);
    private JTextField replaceWith = new JTextField(4);
    private JTextField result = new JTextField( 10 );
    
    private String text = "";
    private String StringToReplace = "";
    private String StringReplaceWith = "";
    private String Stringresult = "";
    
    private LetterReplacer someReplacer;
   
    public test() {
        this.createWindow( WINDOW_WIDTH, WINDOW_HEIGHT );
        contentPane.add( someField );
        
       
        contentPane.add( new JLabel("Symbol to Replace"));
        contentPane.add( toReplace );
        contentPane.add( new JLabel("Replace With"));
        contentPane.add( replaceWith );
        
        contentPane.add(replace);
        contentPane.add( new JLabel("Result"));
        contentPane.add( result);
        
    }

    public void buttonClicked( JButton which ) {
        if (which == replace) {
            text = someField.getText();
            StringToReplace = toReplace.getText();
            StringReplaceWith = replaceWith.getText();
            Stringresult = text
            
            
            while (Stringresult.contains( StringToReplace ) ){
            Stringresult = text.substring( 0, text.indexOf( StringToReplace ) ) + StringReplaceWith + 
            text.substring( text.indexOf( StringToReplace ) + 1, text.length() );  
            
        }
         
        result.setText( Stringresult );
            
        }
    }
}