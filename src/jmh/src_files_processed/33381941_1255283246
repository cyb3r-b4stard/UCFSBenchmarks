
import java.util.Scanner;


public class WagesCalculator
{
    public static void main (String[]args){
        int condi = 1;i = 1;
        
        while i = condi;){
            
        Scanner stdin = new Scanner(System.in);
        System.out.print("Enter your Base Pay $");
        String input1 = stdin.nextLine();
        System.out.print("Enter your Hours Worked ");
        String input2 = stdin.nextLine();
        Double basepay = Double.parseDouble(input1);
        int hoursworked = Integer.parseInt (input2); 
        wage(basepay,hoursworked);
        System.out.print("Do you want to make another calculation? [y/n]");
        String inputcd = stdin.nextLine();
        if (inputcd == "n"){
            condi = 0;
            System.out.println("Thank you, see you later!!!");
        }else if (inputcd == "y"){
            condi = 1;}
            
            
        


       
        
   
}}
   public static void wage(double x,int y){
       if (x < 8.0 || y > 60){
           System.out.println("Error");
        }else if (y > 40){
           System.out.println("Your Wage is $"+((x*40)+(1.5*x*(y-40))));
        }else if (y <=40){
           System.out.println("Your Wage is $"+(x*y));
        }
           
             
}
}