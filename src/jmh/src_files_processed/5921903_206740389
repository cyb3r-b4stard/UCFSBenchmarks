import java.awt.Color;
import java.awt.Graphics;

/**
 * 
 * ### ######### ######
 * 
 */
public class Circle
{
   private int xLoc, yLoc, radius, levels, stepChange;
   /**
    * Construct a circle
    */
   public Circle(int xLoc, int yLoc, int radius, int levels)
   {
       this.yLoc = yLoc;
       this.xLoc = xLoc;
       this.radius = radius;
       this.levels = levels;
       this.stepChange = radius/levels;
    }
    
    /**
     * Draw the circle
     * 
     */
    public void draw(Graphics g)
    {
        
        g.setColor(Color.PINK);
        drawCircles(xLoc,yLoc radius, 1, g);
        
        
    }
    /**
     * Recursive Circles
     */
    public void drawCircles(int radius, int level, Graphics g)
    {
        if(level > levels)
        {
            g.drawOval(xLoc-radius, yLoc-radius, 2*radius, 2*radius);
        }
        drawCircle(xLoc-radius/2, yLoc, radius/2, level+1, g);
        drawCircle(xLoc+radius/2, yLoc, radius/2, level+1, g);
    }
}