public class SpielautomatGUI extends Frame {
  private JLabel spielautomatLabel = new JLabel();
  private JButton startButton = new JButton();
  private JTextField rad1 = new JTextField();
  private JTextField rad2 = new JTextField();
  private JTextField rad3 = new JTextField();
  private JRadioButton gewinn10 = new JRadioButton();
  private JRadioButton gewinn1 = new JRadioButton();
  private JRadioButton gewinn5 = new JRadioButton();
  private JRadioButton gewinn2 = new JRadioButton();
  private JRadioButton gewinn0 = new JRadioButton();
  private JNumberField kassenAnzeige = new JNumberField();
  private JNumberField gewinnAnzeige = new JNumberField();
  private JLabel letzterGewinnLabel = new JLabel();
  private JLabel kassenbestandLabel = new JLabel();
  private JButton einwurfButton = new JButton();
  private JNumberField kapitalAnzeige = new JNumberField();
  private JLabel kapitalLabel = new JLabel();
  
  public SpielautomatGUI(String title) { 
    super(title);
    addWindowListener(new WindowAdapter() {
      public void windowClosing(WindowEvent evt) { dispose(); }
    });
    int frameWidth = 309; 
    int frameHeight = 384;
    setSize(frameWidth, frameHeight);
    Dimension d = Toolkit.getDefaultToolkit().getScreenSize();
    int x = (d.width - getSize().width) / 2;
    int y = (d.height - getSize().height) / 2;
    setLocation(x, y);
    setResizable(false);
    Panel cp = new Panel(null);
    add(cp);
    
    cp.setBackground(new Color(0xFFAFAF));
    spielautomatLabel.setBounds(10, 8, 277, 49);
    spielautomatLabel.setText("SPIELAUTOMAT");
    spielautomatLabel.setHorizontalAlignment(SwingConstants.CENTER);
    spielautomatLabel.setFont(new Font("Broadway Copyist Text", Font.BOLD, 36));
    spielautomatLabel.setForeground(Color.BLACK);
    cp.add(spielautomatLabel);
    startButton.setBounds(20, 225, 78, 25);
    startButton.setText("START");
    startButton.setMargin(new Insets(2, 2, 2, 2));
    startButton.addActionListener(new ActionListener() { 
      public void actionPerformed(ActionEvent evt) { 
        startButton_ActionPerformed(evt);
      }
    });
    startButton.setBackground(new Color(0xFFAFAF));
    startButton.setFont(new Font("@HYSWLongFangSong", Font.BOLD, 18));
    cp.add(startButton);
    rad1.setBounds(20, 75, 78, 40);
    cp.add(rad1);
    rad2.setBounds(20, 125, 78, 40);
    cp.add(rad2);
    rad3.setBounds(20, 175, 78, 40);
    cp.add(rad3);
    gewinn10.setBounds(124, 75, 100, 20);
    gewinn10.setText("* * * = 10 €");
    gewinn10.setOpaque(false);
    cp.add(gewinn10);
    gewinn1.setBounds(124, 135, 100, 20);
    gewinn1.setText("x * x = 1 €");
    gewinn1.setOpaque(false);
    cp.add(gewinn1);
    gewinn5.setBounds(124, 95, 100, 20);
    gewinn5.setText("x x x = 5 €");
    gewinn5.setOpaque(false);
    cp.add(gewinn5);
    gewinn2.setBounds(124, 115, 100, 20);
    gewinn2.setText("* * x =  2 €");
    gewinn2.setOpaque(false);
    cp.add(gewinn2);
    gewinn0.setBounds(124, 155, 100, 20);
    gewinn0.setText("kein Gewinn");
    gewinn0.setOpaque(false);
    cp.add(gewinn0);
    kassenAnzeige.setBounds(124, 310, 147, 28);
    kassenAnzeige.setText("");
    cp.add(kassenAnzeige);
    gewinnAnzeige.setBounds(124, 275, 147, 28);
    gewinnAnzeige.setText("");
    cp.add(gewinnAnzeige);
    letzterGewinnLabel.setBounds(20, 275, 110, 28);
    letzterGewinnLabel.setText("letzter Gewinn");
    cp.add(letzterGewinnLabel);
    kassenbestandLabel.setBounds(20, 310, 110, 28);
    kassenbestandLabel.setText("Kassenbestand");
    cp.add(kassenbestandLabel);
    einwurfButton.setBounds(124, 200, 35, 57);
    einwurfButton.setText("1 €");
    einwurfButton.setMargin(new Insets(2, 2, 2, 2));
    einwurfButton.addActionListener(new ActionListener() { 
      public void actionPerformed(ActionEvent evt) { 
        einwurfButton_ActionPerformed(evt);
      }
    });
    einwurfButton.setBackground(new Color(0xFFAFAF));
    cp.add(einwurfButton);
    kapitalAnzeige.setBounds(176, 230, 97, 25);
    kapitalAnzeige.setText("");
    cp.add(kapitalAnzeige);
    kapitalLabel.setBounds(176, 210, 94, 20);
    kapitalLabel.setText("Kapital:");
    cp.add(kapitalLabel);
    
    setVisible(true);
  }
  
  
  public static void main(String[] args) {
    new SpielautomatGUI("SpielautomatGUI");
  }
  public void startButton_ActionPerformed(ActionEvent evt) {
  }

