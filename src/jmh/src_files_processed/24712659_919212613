import java.util.Scanner;
import java.io.IOException;
import java.io.FileInputStream;
public class FileReader
{
   public static void main(String args[])throws IOException
   {
    FileInputStream FIS = null;
    Scanner fileScanner = null;
    FIS = new FileInputStream("C:\\Users\\ASUS1\\Desktop\\MyFile.txt");
    fileScanner = new Scanner(FIS);
    
    
    int itemNum = 0;
    int totalItems = 0;
    int counter = 0;
    double price = 0.0;
    double avgPrice = 0.0;
    double totalPrice = 0.0;
    double itemCost = 0.0;
    double totalItemCost = 0.0;
    String itemName = "";
    System.out.format("%-8.8s %8.8s %8.8s %n", "Name", "Quantity", "Price"); 
    do
    {
        counter++;
        itemName = fileScanner.nextLine();
        itemNum = fileScanner.nextInt();
        price = fileScanner.nextDouble();
           System.out.printf("%1s %n", "____________________________________");
           System.out.format("%-s %-6d %14.2f %n", itemName, itemNum, price);
        
        itemCost = price * itemNum;
        totalItemCost = itemCost + totalItemCost;
        avgPrice = totalItemCost/counter;
    }while(fileScanner.hasNextInt())
    
    System.out.printf("%s %6.2f" , "Total cost: ", totalItemCost);
}

}