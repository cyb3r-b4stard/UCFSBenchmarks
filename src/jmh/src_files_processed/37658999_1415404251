            Supermarket obj=new Supermarket();
            System.out.println("Enter your section");
            System.out.println("1.Electronics section");
            System.out.println("2.Grocery section");
            System.out.println("3.Clothes section");
            System.out.println("4.Foot wear section");
            System.out.println("5.Sports section");
            System.out.println("6.Accessories section");
            int sec=sc.nextInt();
            switch(sec)
            {
                case 1: obj.Electronics();
                break;
                case 2: obj.Grocery();
                break;
                case 3: obj.Sports();
                break;
                case 4: obj.Accessories();
                break;
                case 5: obj.Clothes();
                break;
                case 6: obj.Footwear();
                break;
                default:System.out.println("Please check your input");
            }
        }
