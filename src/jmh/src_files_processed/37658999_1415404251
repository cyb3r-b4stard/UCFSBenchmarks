    void Grocery()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("*** Welcome to Grocery ***");
        System.out.println("Enter the item which you want");
        System.out.println("1.Rice");
        System.out.println("2.Pulses");
        System.out.println("3.Wheat");
        int kg=sc.nextInt();
        int gro=sc.nextInt();
        switch(gro)
        {
            case 1:
            price[z]=50*kg;
            z++;
            System.out.println("the cost of rice is "+price[z]);
            cost=cost+price[z];
            break;
            case 2:
            price[z]=100*kg;
            z++;
            System.out.println("the cost of pulses is "+price[z]);
            cost=cost+price[z];
            break;
            case 3:
            price[z]=40*kg;
            z++;
            System.out.println("the cost of wheat is "+price[z]);
            cost=cost+price[z];
            break;
            default:System.out.println("please check your input");
        }
    }
