import java.util.Random;
package Testes;


public class VetoresObjetos {

    public int aleaInt(){
        Random r1 = new Random();
        return r1.nextInt(20);
    }
    
    public double aleaDouble(){
        Random r2 = new Random(1);
        return r2.nextDouble(1);
    }
    
    public CC[] produzContasTeste(int qt){
        
        CC[] contas = new CC[qt];
        
        for(int i = 0; i < contas.length; i++){
            
            contas[i] = new CC(this.aleaInt(), this.aleaDouble());
        }
    
        return contas;   
    }
    
    public CC maiorConta(CC[] contas){
        
        CC atual = contas[0];
        CC ant = contas[0];
        
        
        for(int i = 0; i < contas.length; i++){
                
                CC atual = contas[i];
            
                if(ant.saldo > atual.saldo){
                    ant = atual;
                }
                
                atual = ant;
    }
    
        return atual;
    
    }
}

