import java.util.*;
import java.io.*;
public class Test
{
    public static void main(String[] args)
    {
      Scanner reader = new Scanner(System.in);
       
      System.out.print("Reams of paper you're buying ");
      double x = reader.nextDouble();
      
      double total;
      if (x >= 1 && x <= 50) 
      {
          total = x * 2.99;
          total = (int)(total * 100 + .5) / 100.0;
          if (total < 49) {
              total + 9.00
            }
          System.out.println(total);
      }
      else if (x >= 51 && x <= 100) {
          total = x * 2.49;
          total = (int)(total * 100 + .5) / 100.0;
          if (total < 49) {
              total + 9.00
            }
          System.out.println(total);
      }
      else if (x >= 101 && x <= 150) {
          total = x * 1.99;
          total = (int)(total * 100 + .5) / 100.0;
          if (total < 49) {
              total + 9.00
            }
          System.out.println(total);
      }
      else if (x > 151) {
          total = x * 1.49;
          total = (int)(total * 100 + .5) / 100.0;
          if (total < 49) {
              total + 9.00
            }
          System.out.println(total);
        }
    }
}



