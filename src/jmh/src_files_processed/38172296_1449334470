import kareltherobot.*; 
import java.awt.Color;

public class Maze extends Robot
{
  public Maze(int street, int avenue, Directions.Direction dir, int beepers, java.awt.Color swatch)
  {   
        super(street, avenue, dir, beepers, swatch);
  }
  public void followWallRight()
  {
      while(!nextToABeeper())
      {
          if(frontIsClear())
          {
           move();
           }
          if(!frontIsClear())
          {
           turnLeft();
          }
          else
          {
           turnRight();
          }
          if(rightIsClear())
          {
              turnRight();
            }
            else 
            {
            move();
            }
    }
   }
     public void turnRight()
    {

   
      turnLeft();
      turnLeft();
      turnLeft();
     }
     public boolean rightIsClear()
     {
      turnRight();
      if(frontIsClear())
         {
             turnRight();
             return true;
    }
    turnAround();
    return false;
   }
   public void turnAround()
   {
       turnLeft();
       turnLeft)();
   }
}
     
     
   

   
   
  
        
      
      
       
     
     
    
        
  