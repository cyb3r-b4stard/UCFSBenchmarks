public class BankManager
{
    private String Name, LastName, gender, maidenName;
    private double balance;
    private long acctNum;
    private boolean married;
    private String wifeLast, wifeFirst;
    public BankManager (String n, String Ln, double b, long An, boolean M, String g)
    {
        Name = n;
        LastName = Ln;
        balance = b;
        acctNum = An;
        married = M;
        gender = g;
    }
    
    public BankManager (String n, String Ln, boolean M, String g)
    {
        Name = n;
        LastName = Ln;
        balance = 0;
        acctNum = (int)(Math.random()*9000+1000);
        married = M;
        gender = g;
    }
    
    public BankManager (String n, String Ln, double b, boolean M, String g)
    {
        Name = n;
        LastName = Ln;
        balance = b;
        acctNum = (int)(Math.random()*9000+1000);
        married = M;
        gender = g;
    }
    
    public void gotMarried()
    {
        married = true;
    }
    
    public String getLast()
    {
        return LastName;
    }
    
    public String getName()
    {
        return Name;
    }
    public void gotMarried(BankManager spouse)
    {
        married = true;
        maidenName = LastName;
        LastName = spouse.getLast();
        
    }
    
    public double getBalance()
    {
        return balance;
    }
    public String combineAccounts(BankManager spouse)
    {
        balance = spouse.getBalance() + balance;
        gender = "both";
        String spouseName = LastName +  ", " + Name + spouse.getName() + ", " LastName;
        return Name;
    }
    
    public void gotDivorced()
    {
        married = false;
        LastName = maidenName;
    }
    
    public String toString()
    {
        string phrase = LastName ", " Name;
        if (spouseLastName != null)
            return LastName + ", " + Name + spouseLastName 
        
        String phrase += LastName + ", " + Name + ": Balance: $" + balance + " Account: #" + acctNum + " Gender: " + gender + " Married: " + married;
        return phrase;
    }
}