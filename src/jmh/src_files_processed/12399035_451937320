import java.util.Scanner;

public class dloop
{

    public static void main(String[] args) {
        Scanner keyboard = new Scanner(System.in);
        System.out.println("Enter y to repeat");
        String y = keyboard.next();
        do{
           System.out.println("You entered " + y);
            while(y.equals("n"))
                }

            }
        }
    }