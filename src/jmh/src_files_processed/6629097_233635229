public class Game {
	private Player player;
	private Dot dot1;
	private Dot dot2;
	private Dot dot3;
	Private Exit exit;

	public Game(int x, int y) {
		player = new Player(x, y);
		dot1 = new Dot(1, 1);
		dot2 = new Dot(2, 2);
		dot3 = new Dot(3, 3);
		exit = new Exit(4, 4);
	}

	public void move(int dx, int dy) {
		player.move(dx, dy);
		player.collect(dot1);
		player.collect(dot2);
		player.collect(dot3);
	}

	public String toString() {
		return player + " " + dot1 + " " + dot2 + " " + dot3;
	}
}