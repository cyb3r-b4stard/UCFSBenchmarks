

public class Estoque
{    
    private int limite = 100;
    private int totalDeTitulos;
    int Li = 0;
    int Ci = 0;
    int Di = 0;
    
    public Estoque()
    {
        Livro livro = new Livro[limite];
        CD cd = new CD [Limite];
        
    }
    public void AdicionaLivros(String autor,String ISBN, int edicao, double preco, String titulo, int quantidade){
        
        if(totalDeTitulos < limite){
        Livro.livro[Li](autor, ISBN, edicao, preco, titulo, quantidade);
        Li++;
        totalDeTitulos ++;
        }
    } 
    public void AdicionaCD(String artista, int numeroDeFaixas, double tempoTotal, double preco, String titulo, int quantidade)
    {   if(totalDeTitulos < limite)
        {cd[Ci](artista, numeroDeFaixas,tempoTotal, preco,  titulo, quantidade);  
        totalDeTitulos ++;
        {
        else
        System.out.println("Numero máximo de títulos alcançado")
    } 
    public void AdicionaDVD(String diretor, String produtora, String genero, double duracao, double preco, String titulo,int quantidade)
    {
        DVD dvd = new DVD(diretor,produtora, genero, duracao, preco, titulo, quantidade);
        totalDeTitulos ++;
    }
}