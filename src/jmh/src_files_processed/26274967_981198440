
import java.awt.*;
import java.awt.event.*;
import java.applet.Applet;
import javax.swing.*;

public class AnimationIntroduction extends Applet implements ActionListener
{
   private int pacx,pacy;
   private int pacincx, pacincy;
   private Timer timer;
    private int counter;
    public void init()
    { 
        pacx=100; 
        pacy=100;  
        pacincx=2;  
        pacincy=2;  
        timer=new Timer(10,this);
        timer.start();
        setBackground(Color.BLACK);
        counter=0;  
    }
    public void actionPerformed(ActionEvent ae){
        repaint();
    }
    
    public void paint(Graphics g)
    {
        g.setColor(Color.YELLOW);
        if(counter%2==0){ 
        g.fillArc(pacx,pacy,100,100,20,320);  
       
    }
    else{
           g.fillOval(pacx,pacy,100,100); 
        
    }
    ctr++;
    pacx+=pacincx
    pacy+=pacincy
   
        
}