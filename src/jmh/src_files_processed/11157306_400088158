import becker.robots.*;
public class RobotSE  
{ public static void fahre()
   { 
       City wien= new City();
       LinksTaenzer anna = new LinksTaenzer (wien, 2,3, Direction.SOUTH);
       
       anna.dance();
    }
  
  public class SpurenLeger extends RobotSE
  {
      super(aCity, zeile, spalte, aDirection);
  }
  public static void fahr()
    {
        City aCity = new City();
        Spurenleger s = new SpurenLeger (aCity, 2,3,Direction.SOUTH);
        
        s.hinterlasseSpur();
        s.hinterlasseSpur();
        s.hinterlasseSpur();
        s.hinterlasseSpur();
        s.hinterlasseSpur();
        s.hinterlasseSpur();
        s.hinterlasseSpur();
        s.hinterlasseSpur();
    }    
}