
/**
 * @###### 
 * @####### 
 */
public class Warteraum
{
    
    private int zAnzahl;
    public Warteraum()
    {
        kenntErstenPatienten = null;
        zAhnzahl = 0
    }

    public void neuerPatient(Patient pPatient)
    {
        Patient lPatient;

        if (kenntErstenPatient == null)
            kenntErstenPatienten = pPatient;
        else
        {
            lPatient = kenntErstenPatienten;
            while (lPatient.nachfolger() != null)
            {
                lPatient = lPatient.nachfolger();
            }
            lPatient.setzeNachfolger(pPatient);
        }
        zAnzahl++;
    }
    
    public void entferneErstenPatienten()
    {
        if(kenntErstenPatienten == null)
        {
            lPatient.setzeNachfolger(pPatient);
        }
    }
    
    public void kenntErstenPatienten()
    {
        if(lPatient == null)
        {
            kenntErstenPatient = null;
        }
    }
}