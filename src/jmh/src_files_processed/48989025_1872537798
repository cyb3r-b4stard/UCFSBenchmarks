
public class zedEntita extends Entita {
	private Hra hra;
	

	public zedEntita(Hra hra,String ref,int x,int y) {
		super(ref,x,y);
		
		this.hra = hra;
	}
	
	public void krok(long delta) {

		if ((int entita=((Entita)entity.get(1)).getDX < 0) && (x > 355)) {
			return;
		}

		if ((dx > 0) && (x < -1955)) {
			return;
		}
		
		if ((dy < 0) && (y > 355) ){
			return;
		}
		
		if ((dy > 0) && (y < -1958)) {
			return;
		}
		
		super.krok(delta);
	}
	
	public void collidedWith(Entita other) {
	}
}