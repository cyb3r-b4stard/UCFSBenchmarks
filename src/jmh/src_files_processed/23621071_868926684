import java.util.Scanner;

public class Project_1_Babylon
{
    public static void main (String[] args)
    {
        Scanner keyboard = new Scanner(System.in);

        System.out.println( "This program uses the Babylonian algorithm for square roots.");
        System.out.print( "Enter a positive number: ");
        double n = keyboard.nextDouble();
        
        double guess = n/2;
        double squareOfGuess;
        double r;

        do
        {
            r = n / guess;
            guess = (guess + r) / 2;
            squareOfGuess = guess*guess;
        }while ((squareOfGuess - n) > 0.001);
        System.out.println( "\n" + "The square root is " + guess)
    }
}