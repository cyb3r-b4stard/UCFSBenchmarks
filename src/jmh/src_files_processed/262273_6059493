import java.util.Scanner;
public class exercise_5
{
    public static void main(String [] args)
    {
        int num1; 
        num1 = 0;
        Scanner scan = new Scanner(System.in); 
        
        int count_odd; 
        count_odd = 0;
        
        int even_total; 
        even_total = 0;
        
        int x; 
        x = 1;
        
        
        do
        {
        System.out.println("Please Enter Interger");
        num1 = scan.nextInt();
            
        if((num1%2)==0) 
        {
         System.out.print("This is an Even Number" + num1);
         System.out.println("         ");
       
         even_total= even_total + num1;
        } 
        
        else 
        {
         System.out.print("This is an Odd Number" + num1);
         System.out.println("         ");
       
             count_odd = count_odd + 1;
        }
        
        if(num1 == 9) 
        {
         System.out.println("9 Is not allowed please re enter a new integer");
         num1 = scan.nextInt();
        
        }
        
        

    
       }

    
    
    
    while(num1 != 0) 
        {
          System.out.println("         ");
          System.out.println("When 0 is entered the program terminates");
          System.out.println("         ");
          System.out.println("This is the Odd Count: " + count_odd);
          System.out.println("         ");
          System.out.println("This is the running total: " + even_total);
         break;
        }
    }
}

        
         
        
    