public class GIROKONTO 
{
    private String inhaber;
    private float kontostand;
    private float dispoZinssatz;
    private float dispoKredit;

    public GIROKONTO(String name) 
    {
        inhaber = name;
        dispoZinssatz = 0.03f;
        dispoKredit = 1000;
    }

    /**
     * Wenn der einzuzahlende Betrag größer als 0 ist, wird
     * der Betrag dem Kontostand gutgeschrieben.
     */
    public boolean einzahlen(float betrag) 
    {
        if(betrag > 0) 
        {
            kontostand = kontostand + betrag;
            return true;
        } 
        return false;
        
    }

    /**
     * Wenn der auszuzahlende Betrag größer als 0 ist und
     * der Dispositionskredit es erlaubt, wird
     * der Betrag ausgezahlt.
     */
    public boolean auszahlen(float betrag) 
    {
       
        if (betrag <= dispoKredit  )
        {
            kontostand = -betrag 
            return true 
        
        
        
        }
    }

    /**
     * Berechnet die Kreditzinsen mit einem vorher
     * definierten Zinssatz.
     */
    public float verzinsen() 
    {
        float zinsen;
        if(kontostand < 0)
        {
            zinsen = kontostand * dispoZinssatz;
            kontostand = kontostand + zinsen;
            return zinsen;
        }
        return 0;
    }

    /**
     * Von einem Girokonto auf ein anderes Girokonto überweisen.
     */
    public boolean überweisen(GIROKONTO konto, float betrag) 
    {
        
        
        
        
        
        
        
        
    }
    /**
     * Gibt den aktuellen Kontostand zurück.
     */
    public float getKontostand() 
    {
        return kontostand;
    }

    /**
     * Gibt den Kontoinhaber zurück.
     */
    public String getInhaber() 
    {
        return inhaber;
    }
}