0import java.util.Scanner;

public class BlackJack
{
    private int playerTotal; 
    private int computerTotal;
    private int bank;
    int[] playerCards;
    int[] pcCards;
    public BlackJack()
    {
        playerTotal = 0;
        computerTotal = 0;
        bank = 0;
        playerCards = new int[2]; 
        pcCards = new int[2]; 
    }
    
    public void run ()
    {
        Scanner in = new Scanner(System.in);
        System.out.println("Hello. What is your name?");    
        String name = in.nextLine();       
        System.out.println("Welcome! " + name);
    }
    
    public void showPlayerCards()
    {
        playerCards[0] = generateCard();
        playerCards[1] = generateCard();
         playerTotal = playerCards[0] + playerCards[1];
        System.out.println("Your cards: " + playerCards[0] +", " + playerCards[1]);
        System.out.println("Your total is: " + playerTotal 
    }
    
    
    public int generateCard()
    {
        int random = (int) (Math.random()*10 + 1);
        return(random);
    }
    
    

}