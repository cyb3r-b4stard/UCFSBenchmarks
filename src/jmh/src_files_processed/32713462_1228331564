public class Person
{
    private String fullName;
    private double weight;
    private int age;
    private double height;
    private double totalCalories;
    private int gender;
    public static final int male = 1;
    public static final int female = 2;
    public static final int GenderNeutral = 3;
    public static final double LittletoNone = 1.2;
    public static final double LightExercise = 1.375;
    public static final double ModerateExercise = 1.55;
    public static final double HeavyExercise = 1.725;
    public static final double VeryHeavyExercise = 1.9;
    
    
    public void addCalories(double calories)
    {
        if (calories > 0)
        {
            totalCalories = totalCalories + calories;
        }
        return totalCalories;
    }
    
    public void remove

    public Person()
    {
        String Fullname = "NONE";
        double weight = 0;
        int age = 0;
        double height = 0;
        double totalCalories = 0;
        double activityLevel = 0;
        int gender = 3;

    }

    public Person(String f, int g, double w, int a, double h, double ac)
    {
        f = fullName;
        g = gender;
        w = weight;
        a = age;
        h = height;
        ac = 0;
    }

}