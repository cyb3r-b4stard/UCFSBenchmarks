/*
 * ####### ######
 * #/##/##
 * ## #### #######, # #### #### # #### ########!
 */

public class Prices
{
    public static void main ( String[] args )
    {
        double price = 6.42;
        double amountPaid = 10.00;
        
        int priceInPennies =  (int)(price * 100) ;
        int amountPaidInPennies = (int)(amountPaid * 100);
        
        
        final int DOLLARS = 100;
        final int QUARTERS = 25;
        final int DIMES = 10;
        final int NICKELS = 5;
        final int PENNIES = 1;
        
        int change = ( amountPaidInPennies - priceInPennies ) ;
        int changeDollars = change % DOLLARS;
        int changeQuarters =  (( change - changeDollars )  QUARTERS);
        int changeDimes =   (( change - changeDollars ) - changeQuarters ) / DIMES;
        int changeNickels =  ((( change - changeDollars ) - changeQuarters ) - changeDimes ) / NICKELS;
        int changePennies =  (((( change - changeDollars ) - changeQuarters ) - changeDimes ) - changeNickels ) / PENNIES;
        
        System.out.println( "The item cost $" + price + ". The customer paid $" + amountPaid + "." );
        System.out.println ( "Give the customer " + changeDollars + " dollar(s), " + changeQuarters + " quarter(s), " + changeNickels + " nickel(s), and  " + changePennies + " pennies." );
    }
}