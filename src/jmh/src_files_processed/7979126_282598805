import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
public class SimpleGui extend JFrame implements Actionlistener
{
    pprivate JLabel messages = new JLabel("Messages appear here");
    private JTextField name = new JTextField("Type your name here");
    private JButton pressMe = new JButton("Press me");
    Container ca;
    public SimpleGUI()
    {
        super("Press me application");
        setSize(400,100);
        setVisible(true);
         ca = getContentPane();
         
    ca.add (name);
    ca.add(pressMe);
    ca.add(messages);
    pressMe.addActionListener(this);
    setContentPane(ca);
    
    }
   
    public void actionPerformed(ActionEvent event)
    { String whoClicked = name.getText();
      messsages.setText("Hello "+whoClicked);
    }
    
}