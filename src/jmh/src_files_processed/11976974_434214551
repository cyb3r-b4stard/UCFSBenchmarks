import java.util.*;
public class tealine 

{
    
    
    public static void main (String []args)
    {
        Scanner input = new Scanner(System.in); 
        
        double xVariable = 0; 
        
        boolean control = true; 
        boolean control2 = true; 
        while ( control = true)
        {
        System.out.println("Enter the value for A, followed by the value for B:");     
        double aInput = input.nextDouble(); 
        double bInput = input.nextDouble();
        
        
        while ( control2 = true)
        {
            if ( (aInput * xVariable) + bInput = 0)
        {
            control2 = false; 
            
        }
            
            
        }
        
    }
        
        
        
    }
    
    
    
}