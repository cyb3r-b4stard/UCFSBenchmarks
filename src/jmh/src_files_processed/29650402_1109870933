
public class BankAccount
{

    private int balance;

    public BankAccount(int startingBalance)
    {
        balance = startingBalance;
    }

    public void withdraw(int withdrawn)
    {
        if(withdrawn<0)
        {
            throw new IllegalArgumentException("Withdrawls cannot be negative");
        }
        balance -=withdrawn;
    }

    public void deposit(int deposited)
    {
        if(deposited<0)
        {
            throw new IllegalArgumentException("Deposit cannot be negative");
        }
        balance+=deposited;
    }

    public int getBalance()
    {
        return balance;
    }

    public int ATM(int deposited, int withdrawn)
    {
        try
        {
            withdraw(withdrawn);
            deposit(deposited);
        }
    }
}