public class KASTEN
{
    private int links;
    private int oben,l,b;
    
    public KASTEN()
    {
        links = 50;
        oben = 100;
        l=200;
        b=50;
    }

    public void zeichne()
    {
        ZEICHENFENSTER.gibFenster().zeichneRechteck(links,oben,l,b);
    }
    
    public void setzeLinks(int linksNeu)
    {
        links = linksNeu;
    }
    
    public void berumfang();
{
    u=2*1+2*b;

}