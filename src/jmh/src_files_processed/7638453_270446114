import java.util.*;

import java.util.Iterator;
import java.util.HashMap;
import java.util.HashSet;

/**
 * ##### # ########### ## ##### ########### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class StudentList
{
    private ArrayList<Student> studentList;
    private Student student;        
    /**
     * Constructor for objects of class StudentList
     */
    public StudentList()
    {
        studentList = new ArrayList<Student>();
        student = new Student();
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void addStudent(String name,String telephone,String subject)
    {
   
        studentList.add(new Student(name,telephone,subject));
        
    }
    
    public void deleteStudent(String name)
    {
        
        if ( studentList.contains(name))
        studentList.remove(name);
    }
    
    public void findStudentByName(String searchString)
    {
        for( Student student: studentList )
        if (student.getName().equals(searchString))
        System.out.println(student.getStudentDetails());
        System.out.println(" ");
        else
        System.out.println("No records found");
        System.out.println(" ");
    }
    
    public void listStudentsBySubject( String searchString )
    {
        for( Student student : studentList )
        if(student.getSubject().equals(searchString))
        System.out.println(student.getStudentDetails());
    }
        
        
        
        
}