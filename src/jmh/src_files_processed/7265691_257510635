public class Filler

{
    /** Vic gives appropriate beginning and ending messages, while putting a CD in the third and fourth
     * slot of the second sequence.
     */
    
    public static void main (String[] args)
    { Vic.reset (args);
      Shifter one;
      one = new Shifter();
      one.say ("Let me fill slots 3 and 4 in sequence 2.");
      one.moveOn();
      
      Shifter two;
      two = new Shifter();
      if (two.seesSlot())
      {two.FillThreeFour();
          two.say ("All done!")
        }
    }
}
      
      
