import java.util.*;

class ItemList 
{
    public static void main (String[] args) throws IOException
    {
        int selection = 0, n = 0;
        n = Sorting.getArrayLength();
        Scanner scan = new Scanner (System.in);
        
        System.out.println ("Select the method to sort the items in the list: 1 for Selection Sort or 2 for Insertion Sort");
        selection = scan.nextInt();
        
        Comparable[] list = new Comparable[n];
        
        Scanner inputFile = new Scanner (new File ("books.txt"));
                
        for (int i = 0; i < n; i++) {
                        
            itemName = inputFile.next();
            category = inputFile.next();
            quantity = inputFile.next();
            price = inputFile.nextInt();
            
            Item clothes = new Item (itemName, category, quantity, price);
            list{i} = clothes;
        }
        
        if (selection == 1)
            .selectionSort();
        if (selection == 2)
            .insertionSort();
        
    }
}