public class Rechner
{
    private double a;
    private double b;
    private double c;
    private double d;
    private double e;
    private double A;
    private double Pi;
    private double U;

    /**
     * Constructor for objects of class Rechner
     */
    public Rechner()
    {
        a = 0;
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void addieren(int a , int b)
    {
        System.out.println("Die Summe aus " + a + " und " + b + " ergibt : " + (a + b));
    }
    
    public void pqformel(int p , double q){
        a = -(p/2);
        b = (p/2) * (p/2);
        c = Math.sqrt(b - q);
        d = a + c;
        e = a - c;
        System.out.println("X1 = " + d);
        System.out.println("X2 = " + e);
}

    public void pytagoras(int x , int y){
        a = x * x;
        b = y * y;
        c = a + b;
        System.out.println("C² = " + c);
        System.out.println("C = " + Math.sqrt(c));
    }
    
    public void kreis(double r){
       a = r * r;
       Pi = 3.141592654;
       A = Pi * a;
       System.out.println("Die Fläche des Kreises beträgt " + A + "m².");
       U = 2 * Pi * r;
       System.out.println("Der Umfang des Kreises beträgt " + U + "m²");
}

public void Würfel(double a){
    V = a * a * a;
    U = 12 * a;
    System.out.println("Kantenfläche : " + a + "m.");
    System.out.println("Das Volumen des Würfels beträgt " + V "m³.");
    System.out.ptintln("Der Umfang des Würfels beträgt " + U "m.");
    System.out.println("Jede Fläche des Würfels beträgt " + (V / a) "m².");
}
}
        
    
