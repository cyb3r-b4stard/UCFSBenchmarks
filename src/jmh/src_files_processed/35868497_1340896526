import java.util.Scanner;
public class Calculator
{
    public static void main( String[] args )
    {
        double pi = 3.14;
        System.out.println( "What shape would you like to know the voulume of?" );
        Scanner inputa = new Scanner( System.in );
        String starter = inputa.nextLine();
        if( starter.equals( "sphere" )|| starter.equals( "box" )|| starter.equals( "cylinder" )|| starter.equals( "cone" )|| starter.equals( "pyramid" ))
        {
            if( starter.equals( "box" ))
            {
            System.out.println( "What is the length, width, and height" );
            Scanner inputc = new Scanner( System.in );
            String stringLength = inputc.nextLine();
            double length = Double.parseDouble( stringLength );
            Scanner inputd = new Scanner( System.in );
            String stringWidth = inputd.nextLine();
            double width = Double.parseDouble( stringWidth );
            Scanner inpute = new Scanner( System.in );
            String stringHeight = inpute.nextLine();
            double height = Double.parseDouble( stringHeight );
            if( length < 0 || width < 0 || height < 0 )
            {
                System.out.println( "Invalid input. Please put something else." );
            }
            else
            {
                double volumeBox = length * width * height;
                System.out.print( "The box has a volume of " + volumeBox );
            }
            }
            else if( starter.equals( "sphere" ))
            {
            System.out.println( "What is the radius of the sphere" );
            Scanner inputf = new Scanner( System.in );
            String stringRadius = inputf.nextLine();
            double Radius = Double.parseDouble( stringRadius );
            if( Radius < 0 )
            {
                System.out.println(" Invalid Input. Try something else." );
            }
            else
            {
                double volumeSphere = (4.0/3.0)*pi*(Radius*Radius*Radius);
                System.out.println( " The sphere has a volume of " + volumeSphere );
            }
            if( starter.equals( "cylinder"))
            {
            System.out.println( "What is the radius and height?" );
            Scanner inputg = new Scanner( System.in );
            String stringRadius = inputg.nextLine();
            double Radius = Double.parseDouble( stringRadius );
            Scanner inputh = new Scanner( System.in );
            String stringHeight = inputh.nextLine();
            double Height = Double.parseDouble( stringHeight );
            if( Radius < 0 || Height < 0 )
            {
                System.out.println( "Invalid input. Try something else." );
            }
            else
            {
                double volumeCylinder = pi * ( Radius * Radius ) * Height;
                System.out.println( "The cylinder has a volume of " + volumeCylinder );
            }
        }
       }
        else
        {
            System.out.println( "Please enter one of the following : sphere, box, cylinder, cone, or pyramid" );
        }
      
      
    }
}
}
}
