

public class Temperature
{
    private double celciusTemp;
    private double fahrTemp;
    private boolean isSet;
    private char someLetter;
    
    public Temperature( )
    {
        celciusTemp = 0;
        fahrTemp = 32;
    }
    
    public Temperature (double num, char scale)
    {
        if (scale == 'C')
        {
            celciusTemp = num;
            fahrTemp = 9.0/5.0 * celciusTemp + 32;
        }
        else
        {
            fahrTemp = num;
            celciusTemp = 5.0/9.0 + fahrTemp -32);
        }
    }
    
    public void setTemp(double pTemp, char scale)
    {
       if (scale =='C')
       {
           celciusTemp = pTemp;
           fahrTemp = 9.0/5.0*celciusTemp +32;
       }
       else 
       {
           fahrTemp = pTemp;
           celciusTemp = 5.0/9.0 * (fahrTemp-32);
       }
    }
    public double getTemp(char scale)
    {
       double answer;
       if(scale == 'C')
            answer = celciusTemp;
        else
            answer = fahrTemp;
       return answer; 
    }
}