package uebungen.ue08.a03044;

import toolbox.*;
import java.util.*;

public class HIHI
{
    public static String reverse(String wort)
    {
        String rueckwaerts;
        boolean x = true
        if(x==true)
            for ( int buchstabe = wort.length(); buchstabe>0;buchstabe--)
            {
                rueckwaerts = wort.substring(buchstabe);
                return rueckwaerts;
            }
        else
        {
            return null;
        }
    }

    public static void main ()
    {
        String wort = Tastatur.readString("Wort eingeben : ");
        System.out.println(reverse(wort));
    }
}