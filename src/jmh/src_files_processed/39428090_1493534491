
import java.io.*;
import java.util.*;
public class LoanCalculator{
    public static void main (String args[]){
        Scanner black = new Scanner(System.in);
        System.out.println("Enter your monthly payment: ");
        double MP = black.nextDouble();
        Scanner pink = new Scanner(System.in);
        System.out.println("Enter your interest rate: ");
        double green = pink.nextDouble();
        double IR = green/100;
        Scanner red = new Scanner(System.in);
        System.out.println("Enter your loan amount: ");
        double LA = red.nextDouble();
        int Month=0;
        while (LA>=0)
        {
            Month=Month+1;
            double R = LA * IR / 12;
            double P = MP - R;
            double EA = LA - P;
            System.out.println(Month+"     "+LA+"     "+IR+"     "+MP+"     "+P+"     "+EA);
            if (month%12==1)
            {
                system.out.println("month     Loan Amount     Interest Rate     Monthly Payment     Principle     End Amount");
                system.out.println("Press enter to continue");
                Scanner pause = new kbReader
            }
            if(Month>=1000)
            {
                break;
            }
            
            LA=EA;
        }
    }
}
      