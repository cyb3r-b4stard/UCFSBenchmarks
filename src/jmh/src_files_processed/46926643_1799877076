import java.awt.*;

/**
 * ##### ## ########### ############# ## ### ####### #######
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Demo
{
    private Machine machine;

    /**
     * Constructor for objects of class Demo
     */
    public Demo()
    {
        machine = new Machine();
    }

    /**
     * Sample demo method - demonstrates what happens when an object rebounds off the left-hand wall
     */
    public void sampleDemo()
    {
        machine.resetMachine();
        
        Ball8 obj1 = new Ball8(50, 200, -5, 3, Color.RED, 10, machine);
        Ball8 obj2 = new Ball8(100, 300, 1, 2, Color.BLUE, 55, machine);
        Ball8 obj3 = new Ball8(450, 125, -1, -1, Color.YELLOW, 40, machine);
        Ball4 obj4 = new Ball4(100, 200, 2, -2, Color.MAGENTA, 25, machine);
        Ball4 obj5 = new Ball4(100, 400, 2, -3, Color.GREEN, 25, machine);
        Ball4 obj6 = new Ball4(100, 300, 2, -3, Color.BLACK, 35, machine);
        Bumper obj7 = new Bumper(100, 350, 2, 4, color.DARK GREY, 0, machine);
        for(int i = 0; i <= 200; i++)
        {
            machine.pauseMachine();           
            obj1.move();
            obj2.move();
            obj3.move();
            obj4.move();
            obj5.move();
            obj6.move();
        }
    }
}