import javax.swing.*; 

public class EdadTipoPersona 
{
    int edad;
    String mensaje
    
   public EdadTipoPersona ()
   {
        edad = 0;
        mensaje = "";
   }
   
   public void setEdad (int pEdad)
   {
        edad = pEdad;
   }
    
   public void  calcularEdad ()
   {
        
        if  (edad>=0 && edad<=1){
             JOptionPane.showMessageDialog (null, "Es un BebÃ©");
             mensaje = "Es un BebÃ©";
        }
        else if (edad>=2 && edad<=10){
             JOptionPane.showMessageDialog (null, "Es un NiÃ±o");
             mensaje = "Es un NiÃ±o";
        }
        else if (edad>10 && edad<18){
             JOptionPane.showMessageDialog (null, "Es un Joven");
             mensaje = "Es un Joven";
        }
        else if (edad>=18 && edad<=60){
             JOptionPane.showMessageDialog (null, "Es un Adulto");
             mensaje = "Es un Adulto";
        }
        else {
             JOptionPane.showMessageDialog (null, "Es un Adulto Mayor");
             mensaje = "Es un Adulto Mayor";
        }
       
   }
   
}
        