import java.util.ArrayList;

public class LectureSection
{
    private ArrayList<Student> students;
    
    public LectureSection()
    {
        students = new ArrayList<>();
    }
    
    public ArrayList<Student> getStudents()
    {
        return students;
    }
    
    public void setStudents(ArrayList<Student> s)
    {
        students = s;
    }
    
    public void addStudent(Student s)
    {
        students.add(s);
    }
    
    public void addStudent(String name, String bannerId, double gpa)
    {
        Student s = new Student(name, bannerId, gpa);
        students.add(s);
    }
    
    public ArrayList<Student> getGoodStudents()
    {
        ArrayList<Student> good = new ArrayList<>();
        for(Student s: students)
        {
            if(s.getGpa() >= 2.0)
            {
                good.add(s);
            }
        }
        return good;
    }
    
    public void printStudents()
    {
        for(Student s: students)
        {
            System.out.printf("Name: %s\tBanner Id: %s\tGPA: %d", s.getName()
            , s.getBannerId(), s.getGpa();
            
    }
}