
class Pattern
{
    void display(int n)
    {
        for(int i=0;i<n;i++)
        {
            for(int j=1;j<=n-i;j++)
            {
                System.out.println(j);
            }
            for(int j=1;j<=2*i-1;j++)
            {
                System.out.println(" ")
            }
            for(int j=n-i-1;j<=1;j--)
            {
                System.out.print(j);
            }
            System.out.println();
        }
    }
}
