import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

public class PINGPONG extends SPIEL{
    private BALL ball;
    public static SCHLAEGER links;
    public static SCHLAEGER rechts;
    private int a;
    private int b;   
    public PINGPONG() {         
        this.a = 0;
        this.b = 0;
        this.ball = new BALL();
        this.links = new SCHLAEGER();
        this.rechts = new SCHLAEGER();
        this.ball.setzeFarbe("Gelb");
        this.ball.setzeX(400);
        this.ball.setzeY(300);
        this.links.setzeX(15);
        this.links.setzeY(300);
        this.links.setzeFarbe("Gruen");
        this.rechts.setzeX(775);
        this.rechts.setzeY(300);
        this.rechts.setzeFarbe("rot");
        this.ball.setzeVY(2);           
        this.ball.setzeVX(1);              
    }
    public void tick() {
        this.ball.bewegen();
        this.rechts.bewegen();
        this.links.bewegen();
        if(this.ball.nenneX() > 800){
             setzePunkteLinks(a+1);
             this.a = this.a+1;
             this.ball.setzeX(400);
             this.ball.setzeY(300);
        }
        else if(this.ball.nenneX() < 0){            
             setzePunkteRechts(b+1);
             this.b = this.b+1;
             this.ball.setzeX(400);
             this.ball.setzeY(300);               
        }
    }
     public void tasteReagieren(int code) {        
        if(code == 18 && code != 22){
            this.links.setzeVY(2);
        }
        else if(code == 22 && code != 18){
            this.links.setzeVY(-2);                
        }
        else if(code == 10 && code != 8){
            this.rechts.setzeVY(2);           
        } 
        else if(code == 8 && code != 10){
            this.rechts.setzeVY(-2);       
        }
        else if(code != 18 && code != 22 && code != 8 && code != 10){
           this.rechts.setzeVY(0);
           this.links.setzeVY(0);
       }  
       switch(code == code){
           case 18
        }   
    }   
}    