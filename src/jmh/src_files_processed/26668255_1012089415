import java.util.*;

public class Kvadr_rce
{ static Scanner sc = new Scanner (System.in);
    System.out.println("################################################################################################################");
        System.out.println("############################Vítejte u programu řešite kvadratických rovnic######################################");
        System.out.println("################################################################################################################");
   
  public static int zadejCeleCislo(String text)
    {
        boolean chyba = false;
        int cislo = 0; 
        
        do
        {
             System.out.print("\nZadej "+text+" celé číslo:   ");

            try
            {
                cislo = sc.nextInt();
                chyba = false;
              }
            catch (Exception e)
            {
                chyba = true;
                System.out.print( "Nesprávné zadání !! " );
            }
            sc.nextLine();
            
        }while(chyba == true);
      return(cislo);

   
   
 

    
    



 
      
        } 
  public static void main(String args)
  {
            int a = zadejCeleCislo("##hodnota A jako");
            int b = zadejCeleCislo("##hodnota B jako");
            int c = zadejCeleCislo("##hodnota C jako");
            
            if( a ==0)
             {
                 System.out.println("##nebyla zadana kvadraticka rovnice");
                 System.exit(0);
        



 
        
             }                
              
             int d = b*b-4*a*c;
             System.out.println("##Zadaný tvar rovnice: 1.0x^2 +5.0x -2.0 =0");
            if( d<0 )
             
             {
                 System.out.println("rovnice nemá řešení");
                 System.exit(0);
        
              }
       
             
            double x1=(-b-Math.sqrt(d))/(2*a);
            double x2=(-b+Math.sqrt(d))/(2*a);
            System.out.println("##řešení rovnice jsou kořeny:\n x1="+x1+"\n x2="+x2);
            System.out.println("################################################################################################################");
            System.out.println("############################################Děkujeme za využití tohoto programu#################################");
            System.out.println("################################################################################################################");
  }               
                
}