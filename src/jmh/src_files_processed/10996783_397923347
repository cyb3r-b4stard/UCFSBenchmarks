    public static void scelta ()
   {
       InputStreamReader input = new InputStreamReader (System.in);
       BufferedReader keyboard = new BufferedReader (input);
       
        try
        {
          System.out.print("Inserisci libro indicandolo con il suo codice (0/");
          System.out.print(magazzino.x);
          System.out.print(")");
          scelta = keyboard.readLine();
        }
        catch (Exception xx)
        {
          System.out.println("Errore");
          return;
        }
      
        if (scelta == magazzino.elenco [pos].titolo)
        {
          if (magazzino.elenco [pos].copie > 0)
          {
             prezzo_totale = prezzo_totale + magazzino.elenco [pos].prezzo;
               
            }
          }
       }
       
       magazzino.scarica_libri();
   }
}
    
