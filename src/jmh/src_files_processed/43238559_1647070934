
public class Carton
{
    private double jarCapacity;
    private int numberOfJars;

    public Carton(double aCapacity)
    {
        jarCapacity = aCapacity;
        numberOfJars = 0;
    }

    public double getCapacity()
    {
        return jarCapacity;
    }

    public void setCapacity(double aCapacity)
    {
        jarCapacity = aCapacity;
    }

    public void setNumberOfJars(double totalGallons)
    {
        numberOfJars = (int)(totalGallons / getCapacity() );
    }

    public int getNumberOfJars()
    {
        return numberOfJars;
    }

    public String toString()
    {
        return "Capacity" + getCapacity() + "number of jars" + getNumberOfJars();
    }
    public double getUnusedAmount;
    {
        return unusedAmount
    }
    public double getUnsusedAmount(double totalGallons)
    {
        numberOfJars = (int)(totalGallons / getCapacity() );
    }

}