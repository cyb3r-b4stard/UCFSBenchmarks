public class Posto{
    private String nomeDoPosto;
    private int proximoIndexPosto;
    private Bomba[] listaDeBombas;
    public Posto (String nomeDoPosto){
        this.nomeDoPosto=nomeDoPosto;
        proximoIndexPosto=0;
        listaDeBombas = new Bomba[4];
    }
    
    public String getNome(){
        return nomeDoPosto;
    }
    
    public void setNome(String nomeDoPosto){
        this.nomeDoPosto=nomeDoPosto;
    }
    
    public boolean addBomba(Bomba b){
        if(b == null || proximoIndexBombas == 4){return false}
        listaDeBombas[proximoIndexBombas]=b;
        proximoIndexBombas++;
        return true;
    }
}