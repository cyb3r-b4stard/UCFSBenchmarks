
import sum.kern.*;
/**
 * @###### 
 * @####### 
 */
public class NormalesHaus
{
    Bildschirm derBildschirm;
    Stift meinStift;

    public NormalesHaus()
    {
        derBildschirm = new Bildschirm(350,400);
        meinStift = new Stift();
    }

    public void fuehreAus()
    {
        meinStift.bewegeBis(100, 100);
        meinStift.schreibeText("Normales Haus");
        meinStift.bewegeBis(150,180);
        meinStift.runter();
        meinStift.bewegeBis(300,180);
        meinStift.bewegeBis(225,50);
        meinStift.bewegeBis(150,180);
        meinStift.dreheUm(270);
        meinStift.bewegeUm(140);
        meinStift.dreheUm(90);
        meinStift.bewegeUm(150);
        meinStift.dreheUm(90);
        meinStift.bewegeUm(140);
        meinStift.hoch();
        meinStift.bewegeBis(135,155);
        meinStift.runter();
        meinStift.bewegeBis(135,125);
        meinStift.hoch();
        meinStift.bewegeBis(135,110);
        meinStift.runter
	    
        meinStift.gibFrei();
        derBildschirm.gibFrei();
    }
}