
import java.util.Scanner; 

public class Gradenator 
{
    static Scanner sc; 

    public static void main (String [] args) 
    {
        sc = new Scanner(System.in); 
        
        int startBal, deposit, withDraw, total = 0, month = 1 ; 

        System.out.print("Starting Balence: ");
        StartBal = sc.nextInt();
        System.out.print("             Withdrawals: ");
        System.out.print("Month #1     Deposit:");
        deposit = sc.nextInt();
        
        System.out.println();
        
        while (total <= startBal || deposit == -1)
        {
            System.out.print("Month #" + month + " Deposit:");
            deposit = sc.nextInt();
            System.out.print("             Withdrawals: ")
            withDraw = sc.nextInt(); 
            
            month++;

        }
   }
}