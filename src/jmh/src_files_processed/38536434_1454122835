import java.util.*;
public class calculator
{
    public static void main()
    {
        int s,f,ch;
        Scanner in=new Scanner(System.in);
        System.out.println("Enter two values");
        f=in.nextInt();
        s=in.nextInt();
        System.out.println("1. Addition");
        System.out.println("2. Subtraction");
        System.out.println("3. Multiplication");
        System.out.println("4. Division");
        System.out.println("5. Modulus");
        System.out.println("Choose an option");
        ch=in.nextInt();
        switch(ch)
        {
            case 1:
            int sum=f+s;
            System.out.println("The addition of"+f+"and"+s+"is"+sum);
            break;
            case 2:
            int sub=f-s;
            System.out.println("The subtraction of"+f+"and"+s+"is"+sum);
            break;
            case 3:
            int mult=f*s
            System.out.println("The multiplication of"+f+"and"+s+"is"+sum);
            break;
            case 4;
            
            int div=f/s
            
            System.out.println("The division of"+f+"and"+s+"is"+sum);;
            break;
            case 5
            int modu=f%s
            System.out.println("the modulus of"+f+"and"+s+"is"+sum);
            break;
            default:
            System.out.println("Wrong value entered");
        }
    }
}
            

        

