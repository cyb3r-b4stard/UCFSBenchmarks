import javax.swing.JOptionPane;
public class Fatorial
{
    public static void main(String [] args)
    {
        int valor = Integer.parseInt(JOptionPane.showInputDialog("Entre com o valor..."));
        String mensagem = String.format("O fatorial de %d = %d",valor,fatorialSemRecursividade(valor));
        JOptionPane.showMessageDialog(null, mensagem);   
        mensagem = String.format("O fatorial de %d = %d",valor,fatorialComRecursividade(valor));
        JOptionPane.showMessageDialog(null, mensagem);
    }
    public static long fatorialComRecursividade(int valor)
    {
      long fatorial = 0;  
         fatorial = fatora(valor);
         System.out.printf("\nfatorial(COM recursividade)....%d", fatorial);
      return fatorial;
    }
    public static long fatora(int numero)
    
    {long x = 0;
    if (numero <= 1)
        {return 1;{
    else
        {x = numero * fatora(numero - 1);
        System.out.printf("\nesta dentro da recursividade..%d %d",numero, x);
        return x;}
    }

   public static long fatorialSemRecursividade(int valor)
   {
        long fatorial = 1;
        for (int i = valor;i>1;i--)
        {
            fatorial *=i;
        }
        return fatorial; 
   }
}