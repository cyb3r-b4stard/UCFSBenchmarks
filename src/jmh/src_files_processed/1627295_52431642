
public class TicketMachine
{

    private int price;
    private int balance;
    private int total;
    private boolean child;
    private boolean bike;

    public TicketMachine(int ticketCost)
    {
        setPrice(ticketCost);
        this.balance = 0;
        this.total = 0;
    }

    private void setPrice ( int price)
    {
        if ( price <= 50 && price > 0)
        {
            this.price = price;
        }
        else
        {
            System.err.println ("Preis zwischen 0 und 50 sie haben aber " + price +"Euro , Ticket kostet jetzt 3 Euro");
            this.price = 3; 
        }
    }

    public int getPrice()
    {
        return price;
    }

    public int getBalance()
    {
        return balance;
    }

    private int getTotal ()
    {
        return total;
    }

    public void insertMoney(int amount)
    {
        if (amount > 0 )
        { 
            balance += amount;
        }
        else
        {
            System.err.println("Ung√ºltiger Wert" + amount);
        }
    }

    public void printTicket()
    {

        System.out.println("##################");
        System.out.println("# The BlueJ Line");
        System.out.println("# Ticket");
        System.out.println("# " + price + " Euro.");
        System.out.println("##################");
        System.out.println();

        balance-= price;
        total += price;

    }

    public int efundBalance()
    {
        int wechselgeld;
        wechselgeld = getBalance ();
        balance = 0;
        return wechselgeld;
    }

    public int empty()
    {

        int gesamt;
        gesamt = getTotal()  ;
        total = 0 ;
        return gesamt;
    }
    
    public void setChild ( boolean child)
    {
        if ( child == true )
        {
            price %= 2;
        }
    }
   
