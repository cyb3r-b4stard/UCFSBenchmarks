class BerechnungPiV1{
    static double einsDurch_nQuadrat(int n){
         double x;
         x=n;
         double Erg;
         Erg = 1/(x*x);
         return Erg;
    }
    
    static double berechneSumme(int nMax){
         double s;
         s=0;
         int a;
         a=1;
         while(a<=nMax){
             double b;
             b=einsDurch_nQuadrat(a);
             s=b+s;
             a=a+1;}
         return s;
    }
    
    static void berechnePi(int nMax){
        double b; 
        b = berechneSumme(nMax);
        double a = Math.sqrt(6*b);
        System.out.println("pi("+ nMax+") = "+a);
    }
    
