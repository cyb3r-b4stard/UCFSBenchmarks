public class P2BClock
   {
     private int hour;
     private int minute;
     private int second;
     
     public P2BClock()
     {
         hour = 3;
         minute = 45;
         second = 16;
         

         
        }
    
       public P2BClock( int hour, int minute, int second )
       {
           this.hour = hour;
           this.minute = minute;
           this.second = second;
           
           
        }
       
        public String toString ()
        {
          String output = new String();
          output = hour + ":" + minute + ":" +second;
              return output;
            }
            
            