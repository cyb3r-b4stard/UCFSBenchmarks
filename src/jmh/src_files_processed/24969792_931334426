import java.util.Scanner;

/**
   #### ####### #### ### ########## ###### ## ###### #####
   # ####### ######.
*/

public class PersonSearch
{
   public static void main1(String[] args)
   {
      String lookUp;  
      
      String[] people = { "Cutshaw, Will", "Davis, George",
                          "Davis, Jenny", "Russert, Phil",
                          "Russell, Cindy", "Setzer, Charles",
                          "Smathers, Holly", "Smith, Chris",
                          "Smith, Brad", "Williams, Jean" };

      Scanner keyboard = new Scanner(System.in);
      
      System.out.print("Enter the first few characters of " +
                       "the last name to look up: ");
      lookUp = keyboard.nextLine().toLowerCase();

      System.out.println("Here are the names that match:");
      for (String person : people)
      {
         if (person.toLowerCase().startsWith(lookUp))
            System.out.println(person);
      }
   }

  public static void main(String[] args)
  {
    Scanner scanner = new Scanner(System.in);
    Person[] people = {new Person("Will","Cutshaw"), new Person("Davis","George"),
                       new Person("Davis","Jenny"), new Person("Phil","Russert"),
                       new Person("Cindy","Russell"), new Person("Charles","Setzer"),
                       new Person("Holly","Smathers"), new Person("Chris","Smith"),
                       new Person("Brad","Smith"), new Person("Jean","Williams"),} ;
    System.out.println("Enter letters of a name you want to look up: ");
    String lookUp = scanner.nextLine().toLowerCase();
    System.out.println("Here are the names that match:");
    for (Person person:people)
    {
      if(person.cotains(lookUp)
        System.out.println(person);
    }
  }
  

  private class Person
  {
    private String firstName;
    private String lastName;
    private Person(String firstName, String lastName)
    {
      this.firstName = firstName;
      this.lastName = lastName;
    }
    private String toString()
    {
      return lastName+", "+firstName;
    }
    private boolean contains(String letters)
    {
      return (lastName.contains(letters)||firstName.contains(letters));
    }
  }
}