
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Bakery
{
    private Cake vanillaCake;
    private Cake chocolateCake;
    
    public Bakery()
    {
        vanillaCake = new Cake("Vanilla", "Vanilla", 8)
        chocolateCake = new Cake ("Chocolate", "Chocolate", 8)
    }
    
    public int totalSlices()
    {
        return vanillaCake.numberOfSlices + chocolateCake.numberOfSlices;
    }
}