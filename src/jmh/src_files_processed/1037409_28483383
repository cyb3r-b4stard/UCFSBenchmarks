import java.util.Scanner;
class UseDrinksMachines_ex8
{
 public static void main(String[] args)
 {

    DrinksMachine machine = new DrinksMachine(150,50,50);
    
    Scanner input = new Scanner(System.in);
    
    boolean proceed = false;
    
    int count = 0;
    
    while(proceed==false){
        
        if(count == 1){
            
            purchasecan(machine);
            proceed = true;
            
        }
        
        else{
            callcollector(machine);
            proceed = true;
        }
        
        printme("Try again!");
        
        printme("Press 1 to purchase a can. \n Press 2 to call the collector");
        
        count = input.nextInt();
        
        proceed = false;
        
    }

 }
 
 public static void purchasecan(DrinksMachine aa){ 
     
     boolean proceed = false;
     
     while(!proceed){
     Scanner input = new Scanner(System.in);
     
     printme("Insert Money into the machine");
     
     int a = input.nextInt();
     
     int change = 0;
     
     aa.insert(a);
     
     printme("Press 1 for coke or 2 for fanta");
     
     a = input.nextInt()
         
         if(a==1){
          aa.pressCoke();
            if(aa.cokesEmpty()){
              printme("No coke cans left");
            }
            else{
             
              change = aa.pressChange();
              System.out.println(change);         
             
            }
         }
         
         else{
             
             aa.pressFanta();
            if(aa.FantaEmpty()){
              printme("No coke cans left");
            }
            else{
             
              change = aa.pressChange();
              System.out.println(change);         
             
            }
         }
         
          printme("Press 1 to purchase more | 2 to exit");
         
         int b = input.nextInt()
         
         if(a==1){
             proceed = false;
            }
            
            else{
                proceed = true;
            }
     
    }
     
 }
 
