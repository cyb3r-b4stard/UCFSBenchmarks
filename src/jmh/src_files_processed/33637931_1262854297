import java .util.Scanner;

public class Nomina
{
    private double comisionventas;
    private double cventas;
    private double ventas;

    public Nomina(){
        cventas=0;
        ventas=0
        comisionventas=0;
    }

    public Nomina(double cventas, double ventas, double comisionventas){
        this.cventas=cventas;
        this.ventas=ventas;
        this.comisionventas=comisionventas;
    }

    public void setModificarCventas(double cventas){
        this.cventas=cventas;
    }

    public double getConsultarcventas(){
        return cventas;
    }

    public void setModificarventas(double ventas){
        this.ventas=ventas;
    }

    public double getventas(){
        return ventas;
    }

    public void capturarDatos(){
        Scanner teclado;
        teclado=new Scanner(System.in);

        System.out.println("ingrese la cantidad de ventas");
        cventas=teclado.nextDouble();

    }

    public void generarResultado(){
        comisionventas = (cventas * 200 * 0.08) + (cventas *200) + 5000;
        System.out.println ("el total de la nomina + comision de venta"+ comisionventas);

    }

    public static void main(String[]args){
        Nomina = unNomina;
        unNomina = new unNomina();
        unNomina.capturarDatos();
        unNomina.generarResultado();
    }
}
  
    
    
    
    
    
    
     
        