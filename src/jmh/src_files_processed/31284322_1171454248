 */
class Book
{
    private String author;
    private String title;
    private int pages;
    private String refNo;

    /**
     * Set the author and title fields when this object
     * is constructed.
     */
    public Book(String bookAuthor, String bookTitle, int pageNumber)
    {
        author = bookAuthor;
        title = bookTitle;
        pages = pageNumber;
    }
    
    /**
     * This method will return the author of the book
     */
    
   public String getAuthor()
   {
       return author;
   }
   
   /**
    * This method will return the title of the book
    */
   public String getTitle()
   {
       return title;
   }
   
   /**
    * This method will output the author to a terminal window
    */
   public void printAuthor()
   {
       System.out.println("Author: " + author);
   }
   
   /**
    * This method will output the book title to a terminal window
    */
   public void printTitle()
   {
       System.out.println("Title: " + title);
   }

   /**
    * This method is to return the number of pages in the book
    */
   public int getPages()
   {
       return pages;
   }
   
   /**
    * This method will output the book details to the terminal window
    */
   public void printDetails()
   {
       System.out.println("The following will list the details of our book in the library");
       System.out.println();
       System.out.println("Book Author: " + author);
       System.out.println("Book Title: " + title);
       System.out.println("Book Length: " + pages);
      
        if (refNo.length(refNo String) = null) {
            System.out.println("Reference No.: " + refNo);
        }
       
       System.out.println();
       System.out.println("Please return anytime =)");
   }
   
   /**
    * This method will set the reference number for the book
    */
   public void setRefNumber(String ref)
   {
       refNo = ref;
   }
   
   /**
    * This method will return the value of the book's reference number
    */
   public String getRefNumber()
   {
       return refNo;
   }
}