
import java.io.*;
import java.util.*;
public class Tester
{
   public static void main (String args[])
   {
       boolean xc= false;
       while (xc != true)
       {
         Scanner kb = new Scanner(System.in);
         System.out.println("Type in a sentence and press ENTER. ");
         String s = kb.nextLine(); 
        if(s.equalsIgnoreCase("EXIT"))
        {
        String sp[] = s.split("sa");
        int occurances = sp.length-1;   
        System.out.println("There are " + occurances + " occurances.");
    }   
    default
        System.out.println("You have exitted");
   }
}
}