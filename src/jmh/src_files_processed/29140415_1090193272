import java.util.Scanner;

public class Ordering
{
    public static void main (String [] args) 
    {
        final double TAXRATE = .07
        Scanner keyboard = new Scanner(System.in);
        System.out.println("Name of item?");
        String itemName = keyboard.nextLine();
        
        System.out.println("How many of that item?");
        int quantity = keyboard.nextInt();
        
        System.out.println("Cost per item?");
        double costPerItem = keyboard.nextDouble();
        
        double subTotal = quantity + costPerItem;
        double tax = TAXRATE * subTotal;
        double grandTotal = tax + subTotal;
        
    } 
}