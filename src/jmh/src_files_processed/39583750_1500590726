import objectdraw.*;
import java.awt.*;
import javax.swing.*;
import java.awt.Color;
import java.lang.String*;
/**
 * ########### ## ### ########## ##### #### ##### ### 
 * ######## ###### ### ####### ### ##### ##### #### ###### ### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class RaceController extends WindowController
{
    private Line hLine1;
    private Line hLine2;
    private Line hLine3;
    private Line vLine1;
    private Line vLine2;
    private Text display;
    private Text wins;
    private double textLocX;
    private double textLocY;
    private int textSize =20;
    private int canvasWidth = 840;
    private int canvasHeight = 560;
    private int mascotWidth = 75;
    
    public Picture seniorPic;
    public Picture juniorPic;
    public Picture sophomorePic;
    public Picture freshmanPic;
    
    public VisibleImage senior;
    public VisibleImage junior;
    public VisibleImage sophomore;
    public VisibleImage freshman;
    
    private Mascot seniorM;
    private Mascot juniorM;
    private Mascot sophomoreM;
    private Mascot freshmanM;
    
    public void begin(){
        resize (canvasWidth,canvasHeight);
        
        hLine1 = new Line (20, 100, canvasWidth - 20, 100, canvas);
        hLine2 = new Line (20, 200, canvasWidth - 20, 200, canvas);
        hLine3 = new Line (20, 300 , canvasWidth - 20, 300, canvas);
        vLine1 = new Line (120, 30, 120, canvasHeight-150,canvas );
        vLine2 = new Line (canvasWidth-120, 30, canvasWidth-120, canvasHeight-150,canvas);
        
        
        display = new Text ("Racing Mohos", 0,0, canvas);
       
        display.setBold(true);
        display.setColor(Color.ORANGE);
        display.setFontSize(textSize); 
        textLocX = canvasWidth*1/2-display.getWidth()*1/2;
        textLocY = canvasHeight - 100;
        display.moveTo (textLocX,textLocY);
        
        seniorPic = new Picture ("http:
        juniorPic = new Picture ("http:
        sophomorePic = new Picture ("http:
        freshmanPic = new Picture ("http:
        
        senior = seniorPic.createVisibleImage(canvasWidth-100,10,canvas);
        junior = juniorPic.createVisibleImage(canvasWidth-100, 110,canvas);
        sophomore = sophomorePic.createVisibleImage(canvasWidth-100, 210,canvas);
        freshman = freshmanPic.createVisibleImage(canvasWidth-100, 310,canvas);
        
    }
    
    public void onMouseClick(Location loc){
     seniorM = new Mascot (senior, 120-mascotWidth, this, canvas);
     juniorM = new Mascot (junior, 120-mascotWidth, this, canvas);
     sophomoreM = new Mascot (sophomore, 120-mascotWidth, this, canvas);
     freshmanM = new Mascot (freshman, 120-mascotWidth, this, canvas);
    }
    
    
    
    public Text isWinner(){
    
    
    if(seniorM.getX() + seniorM.getWidth() < 120){
    
       return new Text ("Senior wins!",canvasWidth*1/2, canvasHeight - 100);
    }
    
    
    else {
       return false;
    }
    
    
    
    }
    
}