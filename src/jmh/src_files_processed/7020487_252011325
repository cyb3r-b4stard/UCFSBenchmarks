
/**
 * ##### # ########### ## ##### ### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Bus extends Fahrzeug
{
    private int anzahlSitzplaetze;
    private int anzahlPersonen;
    private int belegteSitzplaetze;
    
    public Bus(String typ, int baujahr, int leistung, double geschwindigkeit,
               double hoechstgeschwindigkeit, int anzahlSitzplaetze)
    {
        super(typ, baujahr, leistung, geschwindigkeit, hoechstgeschwindigkeit);
        this.anzahlSitzplaetze = anzahlSitzplaetze;
        anzahlPersonen = 0;
        belegteSitzplaetze = 0;
    }
    
    public void ausgabe()
    {
        super.ausgabe();
        System.out.println("Sitzplätze: "+anzahlSitzplaetze);
        System.out.println("Personen im Bus: "+anzahlPersonen);
        System.out.println("belegte Sitzplaetze: "+belegteSitzplaetze);
    }
    
    public void einsteigen(int AnzahlPersonen)
    {
        if(belegteSitzplaetze+AnzahlPersonen<=anzahlSitzplaetze)
        {
            belegteSitzplaetze+=AnzahlPersonen;
            anzahlPersonen+=AnzahlPersonen;
        }
        else
        {
            belegteSitzplaetze=anzahlSitzplaetze;
            anzahlPersonen+=AnzahlPersonen;
        }
    }
    
    public void aussteigen(int AnzahlPersonen)
    {
        if(anzahlPersonen-AnzahlPersonen>=0)
        {
            anzahlPersonen-=AnzahlPersonen;
            if(belegteSitzplaetze>anzahlPersonen)
            {
                belegteSitzplaetze=anzahlPersonen;
        }
        else
        {
            anzahlPersonen=0;
            belegteSitzplaetze = anzahlPersonen;
            System.out.println("Es können nicht mehr Personen aussteigen als im Bus sind");
        }
    }
    
    public void wievieleStehen()
    {
        
    }
    
    
}