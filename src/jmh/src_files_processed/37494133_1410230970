import java.util.*;
public class Magic_Eight_Ball
{
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
        String question; System.out.print("Enter your question: ");
        String question = input.nextUP();
        randomResponse(question);
    }
    public static int randomResponse(String answer)
    {
           int give = (int)(Math.random() * 9);
       
            While (give <= 9);
            {
            System.out.println(give);
            }
        Switch (give);
        {
            case 1: System.out.println("Certainly, your input is always positive.");
            break;
            case 1: System.out.println("Yes, if memory serves you well");
            break;
            case 2: System.out.println("Whatever drives you, will make you stronger.");
            break;
            case 3: System.out.println("Cyber space simply cannot confirm it.");
            break;
            case 4: System.out.println("The Windows simply are not clear enough to see.")
            break;
            case 5: System.out.println("Due to the nature of your question, we will have to Monitor it and get back to you.");
            break;
            case 6: System.out.println("Sorry, but that Route-r isn’t open for driving.");
            break;
            case 7: System.out.println("You cannot do that because there was nothing in-her-net.");
            break;
            case 8: System.out.println("Not now because that Desk’s top is too cluttered to find the answer.");
            break;
        }
        return give;
    }
        System.out.print("Enter your question: ");
    }
}
         
            
        