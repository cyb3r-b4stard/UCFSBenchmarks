  public void listabusqueda(int elemento)
{
    Scanner sc=new Scanner (System.in);
   int i;
   boolean encontrado;
   encontrado=false;
   i=0;
   while ((encontrado==false)&&(i<=11))
   {
       if(array[i]==elemento)
       {
           encontrado=true;
        }
       else
    {
       i++;
    }
  }
  if((encontrado==true)&&(i==12))
  {
      System.out.println("elemento encontrado");
  }
  else
  {
      encontrado=false;
      System.out.println("no encontrado");
  } 
} 
public void listaordenacion()
   {
       Scanner sc=new Scanner (System.in);
