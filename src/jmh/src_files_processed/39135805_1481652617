
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Moblie
{
    private String type;
    private int screensize;
    private int  pixels;
    private boolean gps;
    private String memory;
       
    private String contract;
    private int charge;
    private String provider;
    
    private int chargeup;
    private int newCharge;
    private int up;
    private int hrs;
    
    private int perMonth;
    
      public Moblie(String newType, int newScreensize,  int newPixels, boolean newGPS) 
       {
        
        type = newType;
        screensize = newScreensize;
        pixels = newPixels;
        gps = newGPS;
        
        charge = 60;
        contract = null;
        provider = null;
        memory = "16GB"
        
        
    }
    
    public int getCharge()
    {
        return charge;
    }
    
    public String getType ()
    { 
        return type; 
    }
    
      public String getProvider ()
    { 
        return provider; 
    }
      
    public void setProvider (String newProvider)
    {
        provider = newProvider;
    }
    
    public void setContractType (String newContractType)
    {
        contract = newContractType;
    }
    
    public int chargeUp ()
    {
       chargeup = 100 - charge;
        newCharge = charge + chargeup;
        charge = 0;
        charge = newCharge;
        return charge;
    }
    
    public void changeProvider(String newProvider)
    {
      provider = null;
      provider = newProvider;
    }
    
    public void printDetails()
    {   String newLine = System.getProperty("line.separator");
        System.out.print(newLine + "################");
        System.out.print(newLine + "# The Phone type is a " + type + " #");
        System.out.print(newLine + "# The Service Provider is " + provider + " #"); 
        System.out.print(newLine + "# The Type of Contract is a " + contract + " #");
        System.out.print(newLine + "# The Screen Size is " + screensize + " inches #");
        System.out.print(newLine + "# GPS " + gps + " #");
        System.out.print(newLine + "# The Resolution is " + pixels + " #");
        System.out.print(newLine + "# The Current Charge is " + charge + " #");
        System.out.print(newLine + "# The Number of hrs on " + hrs + " hrs #");
        System.out.print(newLine + "################");                
    }
    
    public String switchedOnForHrs()
    {
        hrs = 100 - charge;
        return ("Your Phone has been on for " + hrs + " hrs");
    }
    public String howMuchPerMonth (int MonthAmount)
    {
        perMonth = MonthAmount * 12;
        return ("Your Monthly Contract Cost £" + MonthAmount + "  This wil cost you  £" + perMonth + "  for the year");
    }
}