    private static void sort(int num, WordIndex[] words)
    {
        for (int x = 0; x < num-1; x++)
            for (int y = x+1; y < num; y++)
            {
                WordIndex temp = words[x];
                words[x] = words[y];
                words[y] = temp;
        }
    }

    private static int search1(String word, String line)
    {
        int occur = 0;
        for (int x = 0; x < line.length()-word.length()+1; x++)
        {
        }
        return occur;
    }

    private static int search2(String word, String line)
    {
        int occur = 0, pos = 0, newPos = 0;
        while (newPos != -1)
        {
            pos = newPos + 1;
        }
        return occur;
    }
}