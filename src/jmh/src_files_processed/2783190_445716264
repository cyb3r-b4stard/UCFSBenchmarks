import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.*;
public class AuswahlPanel extends JPanel implements ListSelectionListener
{
    private final String[] kurven = {"Sinus", "Rechteck", "Dreieck"};
    private final String text = "Bitte wählen Sie die Kurvenform aus, die Sie darstellen möchten. Sie können eine oder mehrere Kurven darstellen.\nDie Amplitude jeder Kurve kann mit dem Schieberegler unten im Bereich zwischen 1 und 10 verändert werden.";
    private JList<String> liste = new JList<String>(kurven);
    
    private JTextArea textField = new JTextArea(text);
    
    
    public AuswahlPanel()
    {
        this.setLayout(new FlowLayout(FlowLayout.LEFT, 10,10));
        
        textField.setEditable(false);
        textField.setPreferredSize(new Dimension(630,30));
        liste.ListSelectionModel.SINGLE_INTERVAL_SELECTION;
        
        this.add(liste);
        this.add(textField);
        
    }
    
    public void valueChanged(ListSelectionEvent e)
    {
    }

   
}