

import java.io.*;
public class Aplicacao extends contanova
{
    public static void main(String arg[])  
           throws java.io.IOException
    {
        
        Bufferedread obj = new bufferedread (new InputStreamReader(System.in));
        
        String nome;
         String aux;
         String resp;
         int num;
         float saldo;
         float valor;
        
        system.out.println("Digite o nome do titular");
        nome = obj.readLine();
        
        system.out.println("Digite o numero da conta");
        aux = obj.readLine();
        num = Integer.valueOf(aux).Intvalue();
        
        system.out.println("Digite o saldo atual");
        aux = obj.readLine();
        saldo = Integer.valueOf(aux).floatvalue();
        
        system.out.println("Voce deseja depositar alguma quantia?");
        resp = obj.readLine();
        
        contanova objConta = new contanova(nome, num, saldo);
       
        boolean deposito (float saldo)
        {
        
        if (resp == "sim"){
            saldo = getSaldo() + valor;
            return true;
        }
        else
        {
        return false;
        }
       }
        
        if (objConta.deposito == true)
        {
            system.out.println("Digite o vaalor desejado");
            aux = obj.readLine();
            valor = Float.valueOf(aux).floatValue();
            objConta.deposito(valor);
            system.out.println("O valor atual eh: " +objConta.getDeposito());
            
        }
        else{
           system.out.println("O valor do saldo continua o mesmo");
        }  
        
        
        
     
    }
   
}