
/**
 * ####### # ######### ## ###### ######### ####.
 * 
 * ###### ######### ## ##### 
 * @####### (###### ## ###### ## ####)
 */
public class Oceanario{
 

private int bilhetePerm;
private int bilheteTemp;
private int limitePerm;
private int limiteTemp;
private int limiteMaxPermanente;
private int limiteMaxTemporario;
private int bilhetesVendidos;


private static final int BILHETE_PERMANENTE = 15;
private static final int BILHETE_TEMPORARIO = 5;
private static final int LIMITE_PERMANENTE = 4000;
private static final int LIMITE_TEMPORARIO = 500;


public Oceanario(int bilhetePerm,int bilheteTemp,int limitePerm,int limiteTemp){
    bilhetePerm = bilhetePerm;
    bilheteTemp = bilheteTemp;
    limitePerm = bilhetePerm;
    limiteTemp = bilheteTemp;
}
public Oceanario (){
    bilhetePerm =  BILHETE_PERMANENTE;
    bilheteTemp = BILHETE_TEMPORARIO;
    limitePerm =  LIMITE_PERMANENTE;
    limiteTemp = LIMITE_TEMPORARIO;
}



private void price (int bilhetePerm, int bilheteTemp) {
    float pr;
    if (bilhetePerm > 0 && bilheteTemp = 0){
    pr = BILHETE_PERMANENTE ;
    bilhetesVendidos = bilhetePerm; 
}
else if (bilhetePerm > 0 && bilheteTemp > 0){
    pr= Math.round(BILHETE_PERMANENTE*0.20f + BILHETE_TEMPORARIO*0.20f);
}
else if(bilhetePerm = 0 && bilheteTemp > 0){
    pr = BILHETE_TEMPORARIO;
}
return pr;
}
}
