import sum.kern.*; 

public class Zug2
{
	public static void fuehreAus()
	{
		Bildschirm derBildschirm;
		Tastatur dieTastatur;
		Maus dieMaus;
		Lokomotive meineLok,meineLok2;
        Personenwagen derPersonenwagen;
        Gueterwagen derGueterwagen,derGueterwagen2;
		derBildschirm = new Bildschirm();
		dieTastatur = new Tastatur();
		dieMaus = new Maus();
		meineLok = new Lokomotive(500,100);
		meineLok2= new Lokomotive(500,300);
		meineLok.zeichne();
		derPersonenwagen = new Personenwagen(500,200);
		derGueterwagen = new Gueterwagen(500,400);
		while(!dieMaus.doppelKlick());{
		do{
        if(dieTastatur.wurdeGedrueckt())
        {
        switch(dieTastatur.zeichen()){
            case'l':meineLok.koppelAn(new Lokomotive(meineLok.hPosition()+meineLok.laenge(),100)); break;
            case'p':meineLok.koppelAn(new Personenwagen(meineLok.hPosition()+meineLok.laenge(),100)); break;
            case'g':meineLok.koppelAn(new Gueterwagen(derPersonenwagen.hPosition()+derPersonenwagen.laenge(),100)) ;break;
        }
    }}
        if (dieMaus.istGedrueckt())
		{
			
			meineLok.bewegeUm(0.2,derBildschirm.breite());
}
while(!dieMaus.doppelKlick());{}}

}
}
		



