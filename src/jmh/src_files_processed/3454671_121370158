
import java.util.Scanner;
import static java.lang.System.*;

public class Average
{
    private String line;

    public Average()
    {
        line = "";
    }
    public Average(String s)
    {
        line = s;
    }

    public void setLine(String s)
    {
        line = s;
    }

    private int getLowest()
    {
        int lowest = Integer.MAX_VALUE;
        int num = 0;
        Scanner chopper = new Scanner(line);
        while(chopper.hasNextInt())
        {
            num = chopper.nextInt();
            if(num < lowest)
            {
                lowest = num;

            }
        }
        return lowest;
    }

    public double getAverage()
    {

        double average=0.0;
        int count = 0;
        int total = 0;
        Scanner one = new Scanner(line);
        Scanner two = new Scanner(line);
      try{
            while(one.hasNextInt())
            {
                count++;
                one.nextInt();
            }

            while(two.hasNextInt())
            {
                int num = two.nextInt();
                total += num;
                two.nextInt();
            }
            average = ((double) total - getLowest())/(count - 1);
        
        }catch(exception e)
        return average;
    }
}
    public String getLine()
    {
        return line;
    }
    public String toString( )
    {
        return getLine()+"\naverage = "+getAverage();
    }
}