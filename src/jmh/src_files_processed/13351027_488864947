class PayBill{
    String name;
    int id;
    double salary,basic,rallownce,tallowance;
      
    public PayBill(String name,int id,double salary,double basic,double rallowance,double tallowance){
        setData(name,id, salary,rallowance,tallowance,basic);
    }
    private void setData(String name,int id,double salary,double basic,double rallowance,double tallowance){
    this.name=name;
    this.id=id;
    this.basic=basic;        
    }
    public String getName(){
        return name;        
    }
    public int getId(){
        return id;        
    }
    public double getBasic(){
        return basic;
    }
    public double getSalary(){
        return salary;
    }
    public double getRallowance(){
        return basic;
    }
    public double getTallowance(){
        return tallowance;
    }
    public String toString(){
        return "employee name " + name() 
               + "\basic pay" + basic()
               + "\rent allownce " + rallownce()
               + "\transport allowance " + tallowance()
               + "\n salary month " + salary();

    }    