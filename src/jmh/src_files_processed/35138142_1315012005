import java.io.*;
public class Shape_Choice
{
    public void method () throws IOException
    {
        InputStreamReader x = new InputStreamReader(System.in);
        BufferedReader y = new BufferedReader(x);
        System.out.println("1- Area of a circle");
        System.out.println("2- Area of a triangle");
        System.out.println("3- Area of a rectangle");
        System.out.println("Make your choice and press enter:");
        int ch=Integer.parseInt(y.readLine());
        double area;
        Switch(ch);
        {
            case 1:
            System.out.println("Enter the radius:");
            int r=Integer.parseInt(y.readLine());
            area=3.14*r*r;
            break;
            
            case 2:
            System.out.println("Enter the base:");
            int bs=Integer.parseInt(y.readLine());
            System.out.println("Enter the height:");
            int h=Integer.parseInt(y.readLine());
            area=0.5*b*h;
            break;
            
            case 3:
            System.out.println("Enter the length:");
            int l=Integer.parseInt(y.readLine());
            System.out.println("Enter the breadth:");
            int br=Integer.parseInt(y.readLine());
            area=l*br;
            break;
            
            default:
            System.out.println("Wront Input")
            break;
        }
    }
}