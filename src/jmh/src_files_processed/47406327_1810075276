import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.event.ItemListener;
import java.awt.event.ItemEvent;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JCheckBox;

public class CheckBoxFrame extends JFrame
{
    private JLabel label;
    private JCheckBox boldJCheckBox;
    private JCheckBox italicJCheckBox;
    
    public CheckBoxFrame()
    {
        super("JCheckBox Test")
        setLayout(new FlowLayout());
        
        label = new JLabel("Watch the font style change");
        label.setFont("Seril", Font.PLAIN, 14);
        add(label);
        
        boldJCheckBox = new JCheckBox("Bold");
        italicJCheckBox = new JCheckBox("Italic");
        add(boldJCheckBox);
        add(italicJCheckBox);
        
        CheckBoxHandler handler = new CheckBoxHandler();
        boldJCheckBox.addItemListener(handler);
        italicJCheckBox.addItemListener(handler);
    }
    
    private class CheckBoxHandler implements ItemListener
    {
        public void itemStateChanged(ItemEvent event)
        {
            Font myFont = null;
            if (boldJCheckBox.isSelected() && italicJCheckBox.isSelected())
            {
                myfont = new Font("Seril", Font.BOLD + Font.Italic, 14);
            }
            else if(boldJCheckBox.isSelected())
            {
                myfont = new Font("Seril", Font.BOLD, 14);
            }
            else if(italicJCheckBox.isSelecte())
            {
                myfont = new Font("Seril",Font.Italic, 14);
            }
            else
            {
                myfont = new Font("Seril", Font.PLAIN, 14);
            }
            Label.setFont(myFont);
        }
    }    
}