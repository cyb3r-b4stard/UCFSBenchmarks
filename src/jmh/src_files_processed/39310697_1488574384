import java.util.*;
/**
 * ####### #####
 * 
 */
public class Stocks
{
    private double target;
    private double stock;

    /**
     * Constructor 
     */
    public Stocks()
    {
        target = 0;
        stock = 0;
    }
    
    Scanner in = new Scanner(System.in);
    
    public double getStock()
    {
        return stock;
    }
    public void setStock(double stock)
    {
        this.stock = stock;
    }
    public double getTarget()
    {
        return target;
    }
    public void setTarget(double stock)
    {
        this.stock = stock;
    }
    

       
    public void inputStock()
    {
       Scanner in = new Scanner(System.in);
            System.out.println("Enter target price."); 
            setTarget(in.nextDouble()); 
            System.out.println("Enter stock price."); 
            setStock(0); 
            while (stock < target) 
            { 
                    stock = in.nextDouble(); 
                    if (stock >= target) 
                { 
                    System.out.println("Minimum reached. Stock price exceeds target price"); 
                    break; 
                
                }    
                System.out.println("Enter stock price."); 
            }
    }
    
    public static void main(String[] args)
    {
            Stocks x = new Stocks
            
           inputStock();
    }
   
}