import java.util.*;
public class StudentGrades
{
    public static void main (String[] args)
    {
        int c,r,score;
        String name;
        Scanner scanInt = new Scanner(System.in);
        Scanner scanString = new Scanner(System.in);
        final int MAX_ROW = 3, MAX_COLUMN =4;
        Student[][] classSeats = new Student[MAX_ROW][MAX_COLUMN];
        SeatingChart classActions;
        
        for (r=0; r<3; r++)
        {
            for (c=0; c<4; c++)
            {
                System.out.println("Enter Name of student at row "+r+", column "+c+": ");
                name = scanString.nextLine();
                System.out.println("Enter the score for "+name+": ");
                score = scanInt.nextInt();
                classSeats[r][c] = new Student(name,score);
            }
        }
        for (r=0; r<3; r++)
        {
            for (c=0; c<4; c++)
            {
                System.out.print(classSeats[r][c].getName()+" has a score of "+classSeats[r][c].getScore());
                System.out.println();
            }
            System.out.println();
        }
        classActions = new SeatingChart(classSeats);
        System.out.println("Before retakes, the student with the highest score is: "+classActions.findHighestScore());
        for (int count = 0; count < classSeats
    }
}