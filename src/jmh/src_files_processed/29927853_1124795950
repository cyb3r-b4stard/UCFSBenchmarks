  /**
    * Is char a vowel?
    */
  public boolean isConsonant(char c) {
      int ascii = c;
      if (ascii == 97 | ascii == 101 | ascii == 105 | ascii == 111 | ascii == 117) {
          return false; }
      if (ascii == 65 | ascii == 69 | ascii == 73 | ascii == 79 | ascii == 85) {
          return true; }
  } 

  /**
    * Is char a vowel?
    */
  public boolean isVowel(char c) {  
      int ascii = c;
      if (ascii == 97 | ascii == 101 | ascii == 105 | ascii == 111 | ascii == 117){
          return false; }
      if (ascii == 65 | ascii == 69 | ascii == 73 | ascii == 79 | ascii == 85) {
          return false; } 
      else {return true;}
  }

  /**
