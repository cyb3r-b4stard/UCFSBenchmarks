public class DemoStudent {
    private String student;
    private double score1, score2, score3;
    private double av1, av2, av3;
    
    public DemoStudent (String student) {
        this.student = student;
        this.score1 = 0.0;
        this.score2 = 0.0;
        this.score3 = 0.0;
        this.av1 = 0.0
        this.av2 = 0.0
        this.av3 = 0.0
    }
    public void test1(int score1) {
        if (score1 > 100) {
            throw new IllegalArgumentException("Cannot be greater than 100") ;
        }
        else if (score1 < 0) {
            throw new IllegalArgumentException("Cannot be less than 0") ;
        }
        else {
            this.score1 = score1
        }
    }
    public void test2(int score2) {
        if (score2 > 100) {
            throw new IllegalArgumentException("Cannot be greater than 100") ;
        }
        else if (score2 < 0) {
            throw new IllegalArgumentException("Cannot be less than 0") ;
        }
        else {
            this.score2 = score2
        }
    }
    public void test3(int score3) {
        if (score3 > 100) {
            throw new IllegalArgumentException("Cannot be greater than 100") ;
        }
        else if (score3 < 0) {
            throw new IllegalArgumentException("Cannot be less than 0") ;
        }
        else {
            this.score3 = score3
        }
    }
    
        
