public class Termometro
{
 
    /*
     * Termometro com uso de atributos
     */
    
    private double temperaturaCelsius;      
    private double temperaturaKelvin;       
    private double temperaturaFahrenheit;   

    
    
    public Termometro(double temperaturaCelsius){
        this.temperaturaCelsius = temperaturaCelsius;
        this.temperaturaKelvin = temperaturaCelsius + 273.15
        this.temperaturaFahrenheit = (TemperaturaCelsius * 1.8) + 32;
    }
    
    
    public void setTemperatura (double novaTemperatura){
        temperaturaCelsius = novaTemperatura;
    }
    
    
    public double consultaTemperaturaemCelsius(){
        return temperaturaCelsius;
    }
    

    public double transformaCparaK(){
        double novaTemperaturaCelsius = temperaturaCelsius;
        temperaturaKelvin = novaTemperaturaCelsius + 273.15;
        return temperaturaKelvin;
    }
    
    public double transformaCparaF(){
        double temperaturaCelsius = novaTemperaturaCelsius;
        temperaturaFahrenheit = (novaTemperaturaCelsius * 1.8) + 32;
        return temperaturaFahrenheit;
    }
    
    public double transformaKparaC(){
        double temperaturaCelsius = novaTemperaturaCelsius;
        = temperaturaKelvin-273.15;
        return novaTemperaturaCelsius;
    }
    
    public double transformaKparaF(){
        return (1.8 * temperaturaKelvin) -459.67;
    }
    
    
        
