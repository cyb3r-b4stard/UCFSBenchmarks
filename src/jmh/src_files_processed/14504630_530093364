 * @###### (##### #########) 
 * @####### (##. ###### ####)
 */
public class Kredite
{
    private double kredithöhe;
    private double zinsen;
    private double tilgung;
    private double zinssatz;
    private int jahr;

    /**
     * Konstruktor für Objekte der Klasse Kredite
     */
    public Kredite(double kredithöhe, double zinsen, double tilgung, double zinssatz, int jahr)
    {
        this.kredithöhe = kredithöhe;
        this.zinsen = zinsen;
        this.zinssatz = zinssatz;
        this.tilgung = tilgung;
        this.jahr = jahr;
    }

    public double getKredithöhe()
    {
        return this.kredithöhe;
    }
    
    public double getZinsen ()
    {
        this.zinsen = this.kredithöhe * this.zinssatz;
        return this.zinsen;
    }
    
     public double getTilgung ()
    {
        return this.tilgung;
    }
    
    public double getAnnuität ()
    {
        double annuität = this.tilgung + this.zinsen;
        return annuität;
    }
    
    public double getRestbetrag ()
    {
        double annuität = getAnnuität ();
        double restbetrag = this.kredithöhe - annuität;
        return restbetrag;
    }
    
    public void tilgungsplan()
    {
        double zahl = this.kredithöhe;
        int anzahlJahre = 1;
        double restbetrag = getRestbetrag ()
        this.tilgung = getTilgung ();
        System.out.println("Kredithöhe: " + zahl + " €, Tilgungsrate:" + this.tilgung + " €; Zinssatz: " + 
                            this.zinssatz);
        while(zahl >= (150)){
             zahl = zahl- this.tilgung;
            System.out.println(anzahlJahre + ". Jahr Zinsen: " + this.zinsen + " €; Tilgung: " 
                                + this.tilgung + " €; Annuität: " + getAnnuität () + " €; Restdarlehen: " + 
                                getRestbetrag ());
            double annuität = this.tilgung + this.zinsen;
        }
        System.out.println("Die Abschlussrate beträgt " + zahl + " €");
        return restbetrag;
    }
}