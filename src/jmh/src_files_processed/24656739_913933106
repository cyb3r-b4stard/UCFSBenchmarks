 */
public class Room
{
    private String description; 
    private int w;
    private int h;
    private int numberOfItems;
    /**
     * Konstrukt√∏r for objekter af klassen Room
     */
    public Room(int height, int width, String desc) 
    {
        this.w = width;
        this.h = height;
        this.description = desc;
        numberOfItems = 0;
    }
    
    public String describe () {
        String Describeroom = description + (h * w);
        
        return Describeroom;
    }
    public void addItem(Item thenewitem)
    {
    numberOfItems = numberOfItems + 1;
    }
    public void removeitembyname(String nameoftheitemtoremove)
    {
    numberOfItems = numberOfItems -1;
    }
    public int howManyItems ();
    return numberOfItems;
}

    
