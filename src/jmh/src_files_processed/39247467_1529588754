

public class Konto {
    private double kontostand;
    private String kontoinhaber;
    private int kontonummer;

    public Konto(String neuInhaber,int neuNummer) {
        kontoinhaber= neuInhaber;
        kontostand=0;
        kontonummer = neuNummer;
        
    
        
    }

    public double getKontostand () {
          return kontostand;    
    }
    
    public void setkontostand(double neuerKonstand) {
        kontostand = neuerKontostand;
     
    }