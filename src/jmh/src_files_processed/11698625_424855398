/**
 * # ##### #### ###### ### ## ##### # ###### ######
 */
public class Letter
{
   private String sender, recipient, letter;
     /**
    * Creates letter 
    */
   public letter(String newSender, StringnewRecipient)
   {
       this.sender= newSender;
       this.recipient= newRecipient;
       this.letter= "";
   }
   
   /**
    * Adds a line to the letter
    */
   public void addLine(String line)
   {
      this.letter= this.letter + "/n" + line ;
   }
 
}
   
   