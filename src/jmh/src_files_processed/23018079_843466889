import java.math.BigDecimal; 
import java.lang.Math;
public class Super
{
    private String nomeKript; 
    private BigDecimal forcaH(7,3) ;
    private double visaoC; 
    private int diasT; 
    private double velFlight;
    
    
    public Super (String nomeKript, int diasT)
    {
        this.nomeKript = nomeKript;
        this.forcaH = 0;
        this.visaoC = 0;
        this.diasT = diasT; 
    }
    public String getNomeKript(){return nomeKript;}
    public double getForcaH(){return forcaH;}
    public double getVisaoC(){return visaoC;}
    public double getDiasT(){return diasT;}
    public void setNomeKript(String nomeKript){this.nomeKript = nomeKript;}
    public void setDiasT(int diasT){this.diasT = diasT;}
    
    public double calForca(){
        int diasP; 
        forcaH = 1;
        diasP = diasT - 365;
        if(diasT <= 365) {
            return (forcaH); 
        } else{
            for (int i = 1; i <= diasP; i++){
                forcaH *= 1.03; 
            }            
            return(forcaH);
        }
    }
    
    public double calVisao(){
        if (forcaH <= 10){
            return( visaoC = 0 );
        } else {
            visaoC = 1; 
            for (int i = 1; i <= forcaH ; i++){
                visaoC *= 1.02;
            }
            return(visaoC);
        }
        
    }
    
    public boolean VisaoX(){
        if(visaoC <= 100){
            return false;
        } else {
           return true; 
        }                
    }
    
    public double Flight(){
        if (forcaH <= 25){
            velFlight = 0;
            return (velFlight);
        } else {
            for (int i = 1; i <= forcaH ; i+=3){
                velFlight *= 1.09;
            }
            return (velFlight);
        }               
    }
    
    
    

}