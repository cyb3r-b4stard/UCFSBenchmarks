
import java.awt.*;
import java.awt.event.*;
import java.util.Random;
class TESTFENSTER extends Frame implements ActionListener
{
   Button but;
   Button butt;
   boolean b;
   Random rand;
  
   
TESTFENSTER()
   {
  
    super("Fenster");
    super.setVisible(true);
    super.setSize(1000,720);
    super.setLocation(500,500);
    super.setLayout(null);
    super.setBackground(Color.black);
    
    but = new Button("Buut");
    but. setSize(280,280);
    but.setVisible(true);
    but.setLocation(60,70);
    but.setBackground(Color.red);
    super.add(but);
    b= true;
    but.addActionListener(this);
    
    butt = new Button("Buutt");
    butt. setSize(280,280);
    butt.setVisible(false);
    butt.setLocation(170,70);
    butt.setBackground(Color.yellow);
    super.add(butt);
    
    butt.addActionListener(this);
   
       
       
      rand= new Random;
      rand.nextInt(50)
    }
    public void actionPerformed(ActionEvent ae)
    {
        if (b==true)
        {
            but.setVisible(false);
            bot.setVisible(true);
            b=false;
        }
        else 
        {
            but.setVisible(true);
            bot.setVisible(false);
            b=true;
        }
    }
    
    
}
