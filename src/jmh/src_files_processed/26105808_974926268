import java.io.*;
public class numbers
{
public static void main(String args[])throws IOException
{
BufferedReader in=new BufferedReader( new InputStreamReader(System.in));
int a,b,ch;
a=Integer.parseInt(in.readLine());
b=Integer.parseInt(in.readLine());
System.out.println("n1 for sum\n2 for difference\n3 for product\n4 for division");
System.out.println("Enter your choice");
ch=Integer.parseInt(in.readLine());
switch(ch);
{
Case1:
S=a+b;
System.out.println("sum of the numbers="+S);
break;
Case2:
D=a-b;
System.out.println("difference of the numbers="+D);
break;
Case3:
P=a*b;
System.out.println("product of the numbers="+P);
break;
Case4:
Div=a/b;
System.out.println("division of the numbers="+Div);
break;
Default:
System.out.println("wrong data input");
break;
}
}
}