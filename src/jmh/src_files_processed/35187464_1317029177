
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Casa
{
   private String direccion;
   private int metrosT;
   private int metrosC;
   private boolean pareada;
   private int precioUF;
   
   public Casa()
   {
       direccion="";
       metrosT=0;
       metrosC=0;
       pareada=true; 
       precioUF=0;
    }
    
    public String getDireccion()
    {
        return direccion;
    }
    
    public int getMetrosT()
    {
        return metrosT;
    }
    
    public int getMetrosC()
    {
        return metrosC;
    }
    
    public boolean getPareada()
    {
        return pareada;
    }
    
    public int getPrecioUF()
    {
        return precioUF;
    }
    
    public void setDireccion()
    {
        this.direccion=direccion;
    }
    
    public void setMetrosT()
    {
        this.metrosT=metrosT;
    }
    
    public void setMetrosC()
    {
        this.metrosC=metrosC;
    }
    
    public void setPareada()
    {
        this.pareada=pareada;
    }
    
    public void setPrecioUF()
    {
        this.precioUF=precioUF;
    }
    
    
    public void MetodoRetornaUF(double descuento)
    {
        descuento=0;
        if (metrosC < 80 || pareada== true)
        {
            descuento = 5.05;
        }
        else
        {
           descuento = 0;
        }
    }
    
    public void MetodoPrecioUF(double total)
    {
        total=0;
        total=(precioUF - )*2550.83;
    }
}