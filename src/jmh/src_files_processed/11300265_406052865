public class TwitterUser{
    public static final int MORNING=1;
    public static final int AFTERNOON=2;
    public static final int EVENING=3;
    private Counter messageMorning, messageAfternoon, messageEvening;
    public TwitterUser() {
        messageMorning=new Counter();
        messageAfternoon=new Counter();
        messageEvening=new Counter();
    }
    public void sendMsg(int dayPeriod){
        switch (dayPeriod) {
            case MORNING :
            messageMorning.inc();
            break;
            case AFTERNOON :
            messageAfternoon.inc();
            break;
            case EVENING :
            messageEvening.inc();
            break;
        }
    }
    public int numberOfMsgs(int dayPeriod){
        int numberMessage;
        switch (dayPeriod) {
            case MORNING :
            numberMessage=messageMorning.status();
            break;
            case AFTERNOON :
            numberMessage=messageAfternoon.status();
            break;
            case EVENING :
            numberMessage=messageEvening.status();
            break;
        }
        return numberMessage
    }
    public boolean isHappy(){
        return (messageMorning.status()+messageAfternoon.status()+messageEvening.status()>24);
    }
    public boolean reachFullHappiness(){
        return (messageMorning.status()>8 && messageAfternoon.status()>8 && messageEvening.status()>8);
    }
    public void reset(){
        messageMorning.reset();
        messageEvening.reset();
        messageAfternoon.reset();
}
}
        
