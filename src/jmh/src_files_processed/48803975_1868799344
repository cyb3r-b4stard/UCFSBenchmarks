 */
public class moving extends JApplet implements KeyListener
{
    public int x1 = 100;
    public int y1 = 100;
    public int x2;
    public int y2;
    boolean win = false;
    public int x;
    final  int w1 = 30;
    final int h1 = 30;
    final int w2 = 10;
    final int h2 = 10;

    /**
     * Called by the browser or applet viewer to inform this JApplet that it
     * has been loaded into the system. It is always called before the first 
     * time that the start method is called.
     */
    public void init()
    {
      addKeyListener(this);
      setFocusable(true);
        
        double a = Math.random() * 500;
       x2 = (int)a;
      double b = Math.random() * 500;
       y2 = (int)b;
        
    }
     public void paint(Graphics g)
    {
        g.setColor(Color.white);
        g.fillRect(0, 0, 500, 500);
        g.setColor(Color.blue);
        g.fillOval(x1,y1, 30, 30);
        g.setColor(Color.green);
        g.fillOval(x2,y2, 10, 10);
        
        if((x2 + w2 >= x1) && (x2<= x1 + w1) && (y2 + h2 >= y1) && (y2 + h2 <= y1 + h1))
        {
            g.setColor(Color.white);
            g.fillRect(0,0,500,500);
            g.drawString( "You won!" , 250, 250);
            win = true;
        }
           if((x2 >= x1)  && (x2<= x1 + w1) && (y2 + h2 >= y1) && (y2  <= y1 + h1))
        {
            g.setColor(Color.white);
            g.fillRect(0,0,500,500);
            g.drawString( "You won!" , 250, 250);
            win = true;
        }
           if((x2 + h2 >= x1) && (x2<= x1 + w1) && (y2  >= y1) && (y2  <= y1 + h1))
        {
            g.setColor(Color.white);
            g.fillRect(0,0,500,500);
            g.drawString( "You won!" , 250, 250);
            win = true;
        }
           if((x2  >= x1) && (x2<= x1 + w1) && (y2  >= y1) && (y2  <= y1 + h1))
        {
            g.setColor(Color.white);
            g.fillRect(0,0,500,500);
            g.drawString( "You won!" , 250, 250);
            win = true;
        }
    }
    public void keyPressed(KeyEvent e)
    {
        x = e.getKeyCode();
        switch(x)
        {
        case 37: x1 = x1-15;
            break;
        case 38: y1= y1 - 15;
            break;
        case 39: x1= x1 + 15;
            break;
      */  case 40:y1= y1 +15;
            break;
        default: x1 = x1;
            break;
        }
      
   
        if( win = true)
        {
                if ( x == 37)
        {
            x1 = x1 ;
        }
        if ( x == 38)
        {
            x1= x1;
        }
        if ( x ==  39)
        {
            y1= y1;
        }
        if(x == 40)
        {
            y1= y1;
        }  
        repaint();
    }  
}
    public void keyTyped(KeyEvent e) {}
    public void keyReleased (KeyEvent e) {}

    /**
     * Called by the browser or applet viewer to inform this JApplet that it 
     * should start its execution. It is called after the init method and 
     * each time the JApplet is revisited in a Web page. 
     */
  
