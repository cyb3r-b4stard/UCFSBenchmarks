
import sum.kern.*;
/**
 * @###### ########### ###########
 * @####### #####
 */
public class Tetram
{
    Bildschirm derBildschirm;
    Stift meinStift;
    
    int endQuotient = 0;
    int minBreite = 0;
    int maxBreite = 0;
    int minHoehe = 0;
    int maxHoehe = 0;

    public Tetram()
    {
        derBildschirm = new Bildschirm();
        meinStift = new Stift();
    }

    public void BildschirmgroesseAnpassen()
    {
        maxBreite = derBildschirm.breite();
        maxHoehe = derBildschirm.hoehe();
    }
   
    public void BildschirmEndeMalen()
    {
        meinStift.bewegeBis(endQuotient);
        meinStift.dreheUm(270);
        meinStift.runter();
        meinStift.bewegeBis(maxHoehe);
        meinStift.hoch();
    }
    
    public void BerechnungendQuotient()
    {
        endQuotient = maxBreite / 80;
    }
    
    public void fuehreAus()
    {
        BildschirmgroesseAnpassen();
        BerechnungendQuotient()
        BildschirmEndeMalen();
	    
        meinStift.gibFrei();
        derBildschirm.gibFrei();
    }
}