

public class Auto
{
    public Auto(float wagen , float sparen)
    { int i = 0;
        while (wagen > sparen)
        { 
            wagen = wagen * 1.014f;
            sparen = (sparen * 1.013f) + 8000;
            System.out.print( " Prijs wagen = " wagen );
            System.out.print( " Prijs sparen = "sparen );
            System.out.print( "Aantal jaar = " i );
            i = i + 1;
        }
        
     
    }
    }