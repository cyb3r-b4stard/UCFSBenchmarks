import javax.swing.*;
import java.util.*;
import java.awt.*; 
import java.awt.geom.*;
import java.awt.event.*;
import javax.swing.Timer;

public class drawingBoard extends JFrame
{
   static Toolkit tk = Toolkit.getDefaultToolkit();
   static Dimension d = tk.getScreenSize();

   
  
  public drawingBoard()
   {   
       this.setSize(d.width, d.height-40);
       this.setTitle("NBody Sim");
       this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
       this.setVisible(true);
       paintSurface paintingObject = new paintSurface();
       this.add(paintingObject);
       paintingObject.setUpBodies();
       getContentPane().setBackground(Color.black);
       Timer t = new Timer(30, e -> {paintingObject.repaint(); } );
       t.start();
   }      
}

