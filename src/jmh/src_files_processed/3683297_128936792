
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### #### ### ####
 * @####### ##.##.####
 */
public class Auto
{
    private String marke;
    private int baujahr;
    private boolean automatik;
    private boolean elektrisch;
    private int sitzplaetze;
    private int kmstand;

    public Auto()
    {
        setMarke("BMW");
        setAutomatik(true);
        setElektrisch(true);
        setSitzplaetze(5);
        setKmstand(1000);
    }

    public Auto(String marke, int baujahr, boolean automatik, boolean elektrisch, int sitzplaetze, int kmstand)
    {
        setMarke(marke);
        if(baujahr >= 1950)
        {
            this.baujahr = baujahr;
        }
        setAutomatik(automatik);
        setElektrisch(elektrisch);
        setSitzplaetze(sitzplaetze);
        setKmstand(kmstand);
    }

    public String getMarke()
    {
        return marke;
    }

    public void setMarke(String marke)
    {
        if(marke.length()>0 && marke != null)
        {
            this.marke = marke;
        }
        else
        {
            System.out.println("Es wurde ein Fehler erkannt");
            setMarke("BMW");
        }
    }

    public int getBaujahr()
    {
        return baujahr;
    }

    public boolean getAutomatik()
    {
        return automatik;
    }

    public void setAutomatik(boolean automatik)
    {
        this.automatik = automatik;
    }

    public boolean getElektrisch()
    {
        return elektrisch;
    }

    public void setElektrisch(boolean elektrisch)
    {
        if(getElektrisch() == true)
        {
            this.automatik = true;
        }
        else
        {
            this.elektrisch = elektrisch;
        }
    }

    public int getSitzplaetze()
    {
        return sitzplaetze;
    }

    public void setSitzplaetze(int sitzplaetze)
    {
        if(sitzplaetze >=2 && sitzplaetze <=9)
        {
            this.sitzplaetze = sitzplaetze;
        }
        else
        {
            System.out.println("Es wurde eine ungültige Zahl eingegeben");
            setSitzplaetze(5);
        }
    }
    
    public int berechneAlter()
    {
        return 2013 - baujahr;
    }
    
    public int berechneAlter(int aktJahr)
    {
        return aktJahr - baujahr;
    }
    
    public int getKmstand()
    {
        return kmstand;
    }
    
    public void setKmstand(int kmstand)
    {
        if(kmstand >0)
        {
            this.kmstand += kmstand;
        }
        else
        {
            System.out.println("Es wurde ein Fehler erkannt");
            setKmstand (1000);
        }
    }
    
    public int fahren()
    {
        return kmstand + 10;
    }
    
    public int fahren (int strecke)
    {
        if(strecke >0)
        {
            return kmstand + strecke
        }
        else
        {
            System.out.println("Es wurde ein Fehler erkannt");
        }
    }
    
    public void printInfo()
    {
        System.out.println("Auto: ");
        System.out.println("Marke: " + marke);
        System.out.println("Baujahr: " + baujahr);
        System.out.println("Automatik: " + automatik);
        System.out.println("Elektrisch: " + elektrisch);
        System.out.println("Sitzplätze: " + sitzplaetze);
        System.out.println("Alter(2013 - Baujahr): " + berechneAlter());
    }
}