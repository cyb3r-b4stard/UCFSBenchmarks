public class Funcionario
{
    private String nome;
    private int idade;
    private int tempoCasa;
    private int numFilhos;
    private double salarioBruto;
    private boolean temAdcNoturno;
    
    public Funcionario(String nome, double salario, int idade)
    {
        this.nome = nome;
        this.salarioBruto = salario;
        this.idade = idade;
    }
    
    public void setNome(String nome)
    {
        this.nome = nome;
    }
    
    public String getNome()
    {
        return nome;
    }
    
    public void setTempoCasa(int tempoCasa)
    {
        this.tempoCasa = tempoCasa;
    }
    
    public int getTempoCasa()
    {
        return tempoCasa;
    }
    
    public void setNumFilhos(int numFilhos)
    {
        this.numFilhos = numFilhos;
    }
    
    public int getNumFilhos()
    {
        return numFilhos;
    }
    
    public void setSalarioBruto(double salarioBruto)
    {
        this.salarioBruto = salarioBruto;
    }
    
    public double getSalarioBruto()
    {
        return salarioBruto;
    }
    
    public void setTemAdcNoturno(boolean temAdcNoturno)
    {
        this.temAdcNoturno = temAdcNoturno;
    }
    
    public boolean getTemAdcNoturno()
    {
        return temAdcNoturno;
    }
    
    public double salarioLiquido()
    {
        int nf = (numFilhos>=3)?3:numFilho;  
        int ts = (tempoCasa / 4 > 0) ?(tempoCasa - (tempoCasa % 4))/4 : 0;
        return salarioBruto - (0.13 * salarioBruto) - (0.01 * salarioBruto) + (nf * 50);
        ((ts * 0.10) * salarioBruto) + ((temAdcNoturno)?(0.09 * salarioBruto):0);
    }
    
    public int tempoAposentadoria()
    {
        return 0;
    }
}