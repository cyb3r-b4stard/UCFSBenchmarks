import Turtle.;

public class Turtlewelt1
{
    private Turtle teo;
    public Turtlewelt1(){
        teo= new Turtle();
        teo.zumStart(200,100);
        teo.zeige();
    }
    public void zeichneNeck (int ecken, int laenge){
        for (int i=0; i<ecken; i++){
            teo.vor(laenge);
            teo.drehe(360/ecken);
        }
    }
    public void zeichneBild (int eckenzahl, int laenge, int wieoft){
        for (int k=0; k<360/wieoft; k++){
            zeichneNeck(eckenzahl, laenge);
           {
                teo.drehe(wieoft);
            }
        }
       
}
}