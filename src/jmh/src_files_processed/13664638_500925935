
import sum.kern.*;
/**
 * @###### 
 * @####### 
 */
public class Kugel
{
    Stift hatStift;
    int zG ;
    int zV ;
    int zH ;
    double zGes ;
    public Kugel(int pG, int pV, int pH, double pGes)
    {
        zG = pG;
        zV = pV;
        zH = pH;
        zGes = pGes;
        hatStift = new Stift();
    }

    public void erstelle()
    {
        hatStift.hoch();
        hatStift.bewegeBis(200 ,200);
        hatStift.zeichneRechteck (400, 600);
        hatStift.normal();
    }
    
    public void spawn ()
    {
        hatStift.hoch();
        hatStift.bewegeBis(zV,zH);
        hatStift.zeichneKreis(zG);
    }
    
    public void radiere()
    {
        hatStift.radiere();
        hatStift.zeichneKreis(zG);
        hatStift.normal
    }
    
    public void bewege ()
    {
        this.spawn();
        this.radiere();
        this.bewegeUm(zGes);
    }
	    
}