        public void start()throws IOException
       {
           try                
        {
             System.out.println(" Enter the number of players");
             no_of_players=Integer.parseInt(br.readLine ());
        }
        catch(NumberFormatException ne)
        {
            System.out.println("Enter correct number of players. Try again");
            start() ;
        }
        if(no_of_players==0)
        {
            System.out.println("Not enough players");
            start();
        }
        points=new int[no_of_players][3];     
        total=new int[no_of_players];
        name=new String[no_of_players][2];
        System.out.println();
        for(int i=0;i<no_of_players;i++)      
        {
          for(int j=0;j<3;j++)
          {
              total[i]=0;
              points[i][j]=0;
           }
        }                                      
        for(int i=0; i<no_of_players;i++)      
        {
            String nm=null;
            boolean flag=false;
            System.out.println("Player"+(i+1)+" enter your name");
            nm=br.readLine();
            while(flag=false)
            {
             char nm_char[]=new char[nm.length()];  
             for(int x=0; x<nm.length();x++)
             {
                 nm_char[x]=nm.charAT(x);
              }
              for(int m=0;m<nm.length(); m++)
              {
                  if(nm_char[m]<'a'||nm_char[m]>'z'||nm_char[m]<'A'||nm_char[m]>'Z')
                  {
                      flag=false;
                      System.out.println("Name not accepted. Re-enter. ");
                      nm=br.readLine();
                      break;
                    }
                    else
                      flag=true;
                    }
                }
                if(flag==true)
                   name[i][0]=nm;
                int age;
                String age1;
                try
                {
                    System.out.println("Player"+(i+1)+"Enter your age");
                    age1=br.readLine();
                    age=Integer.parseInt(age1);
                    if(age<0 || age>120)
                    {
                        while(age<0 || age>82)           
                        {
                            System.out.println("Age is invalid. Please Re-enter");
                            age1=br.readLine();
                            age=Integer.parseInt(age1);
                        }
                    }
                    name[i][1]=age1;
                }
                catch(NumberFormatException ne)
                {
                    System.out.println("The age you typed is invalid. Re-enter");
                    age1="0";
                    age=0;
                } 
             
                     name[i][1]=age1;
                    choices[0]=0;
                    choices[1]=0;
                    choices[2]=0;
                    a=0;
                    for (int j=0; j<3; j++)
                    {
                        try
                        {
                            System.out.println("\t\t\tPlayer "+(i+1)+" round " +(j+1)+" Begins");
                            System.out.println();
                            System.out.println("1.Football");
                            System.out.println("2.Cricket");
                            System.out.println("3.Basketball");
                            System.out.println("Select the category you want to attempt:");
                            choice=Integer.parseInt(br.readLine());
                        }
                        catch(NumberFormatException e)
                        {
                            System.out.println("Invalid Choice. 'Football' category chosen\n");
                            choice=1;
                        }
                        if((choices[0]==choice)||(choices[2]==choice))
                        {
                            System.out.println("Category already chosen");
                            System.out.println();
                            j-=1;
                            continue;
                        }
                        else
                        {
                            choices[a]=choice;
                            a++;
                        }
                        
                        
                        switch(choice)  
                        {
                            case 1:
                                 score= football();
                                 System.out.println();
                                 System.out.println("your score at the end of Round " +(j+1) + "is" +score);
                                 break;
                            case 2:
                                 score=cricket();
                                 System.out.println();
                                 System.out.println("Your Score at the end of Round " +(j+1) + "is" +score);
                                 break;
                            case 3:
                                 score= basketball();
                                 System.out.println();
                                 System.out.println("your score at the end of Round " +(j+1) + "is" +score);
                                 break;
                            default:
                                 System.out.println("\nSelect a valid Category");
                                 j--;
                                 continue;
                                }
                                points [i][j]=score;
                                if((score<3)&&(j<2))
                                {
                                    System.out.println("\nSorry you did not score enough to proceeed to the next round");
                                    System.out.println();
                                    if(j==0)
                                    {
                                        points[i][1]=0;
                                        points[i][2]=0;
                                    }
                                    if(j==1)
                                    {
                                        points[i][2]=0;
                                    }
                                    break;
                                }
                    }
                    for (int j=0;j<3;j++)
                    {
                        total[i]=total[i]+points [i][j];
       
                    }
                    System.out.println("Your total is :"+total[i]);
                    System.out.println();
        }
        sortScore();
}
       public int football()throws IOException   
