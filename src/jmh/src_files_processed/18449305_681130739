import java.util.Scanner;

public class Sample
{
    public static void main (String [] args)
    {
        Scanner scan = new Scanner (System.in);
        System.out.println("What is your name?");
        String name;
        name = scan.nextLine();
        System.out.println("Hi " + name);
        System.out.println("Your first initial is: " + name.substring(0,1));
        System.out.println("The length of your name is: " + name.length());
        System.out.println("The letter i appears in your name at position: " + name.indexOf ("i"));
        System.out.println("How are you?");
        String response;
        if (response.equals("tired"))
        {
            System.out.println("I am sorry you did not get enough sleep.");
        }
        else if (response.equals("well"));
        {
            System.out.println("I am glad you are feeling well.");
        }

        response = scan.nextLine();
        System.out.println("I'm glad you are feeling " + response +".");
        
        System.out.println("What is your favorite number?");
        int number;
        number = scan.nextInt();
        if (number < 5)
        {
            System.out.println("Small number");
        }
        else if (number < 20)
        {
            System.out.println("mid-size");
        }
        else
        {
            System.out.println("Large");
        }
         
        
        System.out.println("What is your GPA?");
        double GPA;
        GPA = scan.nextDouble;
        if (GPA > 4.0);
        {
            System.out.println("You're doing great! Keep up the good work!");
        }
        else if ((GPA > 3.0) && (GPA <= 4.0))
        {
            System.out.println("Mice work! You're awesome!")
        }
        else if (GPA > 2.0) && (GPA <= 3.0);
        {
            System.out.println("You're doing alright. Keep studying though!")
        }
        else if (GPA < 2.0);
        {
            Syatem.out.println("I would advise you to stay for 8th hour...")
        }
        
        
    
            
        System.out.println("I like the number " + number + ", too");
        System.out.println("The square of your number is: " + number * number);
        System.out.println("What is your least favorite number?");
        int number2;
        number2 = scan.nextInt();
        System.out.println("The sum of you favorite and least favorite number is: " + (number + number2));
       
        
      
        
    }
}