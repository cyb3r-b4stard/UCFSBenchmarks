import java.util.Scanner;
public class ConsoleRobot
{
   public static void main(String [] args)
   {
      World yard = new World();
 
      SmarterRobot ringo = new SmarterRobot();
      yard.add(ringo,5,4);

      yard.addBeeper(5,9);
      yard.addBeeper(4,5);

      yard.addBeeper(9,4);
      yard.addBeeper(9,5);

      Scanner scan = new Scanner(System.in);
      System.out.println("Enter a command:");
      String command = scan.nextLine();
      
      String command;
      
      command = command.toLowerCase();

      while (!command.equals("stop"))
      {
       System.out.println("Enter a command:");
       command = scan.nextLine();
	  System.out.println("command = "+command);

	  if ( command.contains("adelante") || ("forward"))
	  {
	      ringo.move();+ numOfTimes;
	      System.out.println("Moving Forward...");
          }
          if ( command.equals("adelante NumOfTimes") || ("moveNumOfTimes") )
	  {
	      ringo.moveNumOfTimes();
	      System.out.println("Moving Forward...");
          }
     
      if ( command.equals("derecha") || ("right"))
	   {
	       ringo.turnRight();
           }
      if ( command.equals("izquierda") || ("left"))
	  {
		 ringo.turnLeft();
          }
      if ( command.equals("recoger") || ("collect") )
          {
		ringo.pickBeeper();
		System.out.println("Picking Up Beepers...");
          }
      if ( command.equals("soltar") || ("drop"))
	   {
		ringo.putBeeper();
		System.out.println("Putting Down Beepers..");
	   }
	  System.out.println("Enter a command:");
	  command = scan.nextLine();
	 }
        System.out.println("Finished");
        
   }
}


