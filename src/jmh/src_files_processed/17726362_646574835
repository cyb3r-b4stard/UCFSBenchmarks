import java.io.*;
import java.util.Scanner; 
import java.text.*;

public class Unit3_Lesson3_2  
{
static Scanner in = new Scanner(System.in); 
public static void main() {
    Scanner scanner = new Scanner(System.in);   
    DecimalFormat mf = new DecimalFormat("'$'0.00");    
    DecimalFormat df = new DecimalFormat("#.###");  
int price; double discount; String d; 
double d1; double d2; double d3; 
    
    System.out.println("Enter a price and a word 'discount1,discount2,discount3'. If discount1 is entered you will pay 70% of the list price, if discount2 is entered you pay 80% and if dicount3 is entered you pay 90% of the list price ");
    System.out.println("Enter a price ");
    price = in.nextInt();
    System.out.println("Enter discount1,discount2 or discount3 ");
    d = scanner.nextLine();
    
   
   
   
   
    if (d.equals("discount1")){ 
        discount= .30*price;
        d1= price-discount;
        System.out.println("Your estimated price is  " + d1);}
        else 
    if (d.equals("discount2")){
        discount=.20*price;
        d2= price-discount;
        System.out.println("Your estimated price is " + d2);}
         else 
    if (d.equals("discount3")){
        discount= .10*price;
        d3= price-discount;
            System.out.println("Your estimated price is " + d3);}
        
        else System.out.println("Invalid entry");    
       System.out.println("Thank you for running my program! "); 
}
}
