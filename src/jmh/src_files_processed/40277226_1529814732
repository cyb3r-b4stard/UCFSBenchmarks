    public static void squareArea() {
        double side;
        double aire;
        output.print("Longueur du côté ? ");
        side = input.nextDouble();
        aire = side * side; 
        output.println("L'aire est " + aire);
    }

    public static void gaufres() {
        int nbp;         
        double q;
        output.print("Nombre de convives ? ");
        nbp = input.nextInt();
        output.println("Pour " + nbp + " personnes : ");
        q =  2.0 * nbp / 6.0;    
        output.println(q + " oeuf(s)");
        q = 125.0 * nbp / 6.0;
        output.println(q + " g de beurre");
        q =  50.0 * nbp / 6.0;
        output.println(q + " g de sucre");
        q = 250.0 * nbp / 6.0;
        output.println(q + " g de farine");
        q =  75.0 * nbp / 6.0;
        output.println(q + " cl de lait");
        q =   0.5 * nbp / 6.0;
        output.println(q + " paquet(s) de levure");
        output.println("Mélangez les ingrédients en ajoutant le lait petit à petit.");
    }

    public static void sommesDeuxEntiers(){
        int premierTirage = random.nextInt(21);
        output.println("Veuillez saisir un entier");
        int deuxiemeTirage = input.nextInt();
        double moyenne = (premierTirage + deuxiemeTirage)/2;
        output.println("La somme des deux nombres est " + (premierTirage+deuxiemeTirage) + " et la moyenne est de " + moyenne);
    }

    public static void concatenationDeuxMots(){
        output.println("Saisir premier mot");
        String premierMot = input.next();
        output.println("Saisir deuxieme mot");
        String deuxiemeMot = input.next();
        output.println(premierMot+deuxiemeMot + " "+ deuxiemeMot + premierMot);
    }

    public static void marché(){
        int poidsGramme = random.nextInt();
        output.println("Saisir prix kilo");
        double prixKilo = input.nextDouble();
        double prix = (poidsGramme * 0.001) * prixKilo;
        output.println("Le prix est de : " + prix + ".");
    }

    public static void total(){
        Exercices.sommesDeuxEntiers();
        Exercices.concatenationDeuxMots();
        Exercices.marché();

    }

    /**
     * Méthode diviser
     *
     * @param dividende un paramètre
     * @param diviseur un paramètre
     */
    public static void diviser(int dividende, int diviseur) {
        output.println(dividende + " divisé par " + diviseur + " donne ");
        output.println(dividende / diviseur);
    }

}

}