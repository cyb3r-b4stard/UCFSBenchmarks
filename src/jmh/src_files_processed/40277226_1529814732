    public static void change(String a, int b, double c) {
        String d;
        int e;
        double f;
        a = "Hello";
        b = b * 2;
        c = 3.14;
        d = "Coucou";
        e = -1;
        f = 0.07;
        output.println(a + " " + b + " " + c);
    }
     
    public static void appelleChange() {
        String a = "Bonjour";
        int b = 1;
        double c = 0.0;
        String d = a;
        int e = b;
        double f = c;
        Exercices.change("Bonjour", 10, 0.0);        
        Exercices.change(a, b, c);
        Exercices.change(d, e, f);
    }
    public static String getRandomNumber() {
        int i = random.nextInt(6);
        String nombre;
        switch (i){
            case 5: nombre = "CINQ";
            break;
            case 4: nombre = "QUATRE";
            break;
            case 3: nombre = "TROIS";
            break;
            case 2: nombre = "DEUX";
            break;
            case 1: nombre = "UN";
            break;
            default: nombre = "ZERO";
            break;
        }
        return nombre;
        
        /* if (i == 0) {
