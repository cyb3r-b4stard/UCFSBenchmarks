import java.util.Scanner;
public class TargetZone
{
    public static void main(String[] args)
    {
        String target = "within";
        Scanner in = new Scanner(System.in);
        
        System.out.print("Enter your age: ");
        String age = in.next();
        double newAge = Double.parseDouble(age);
        
        System.out.print("\nEnter your resting heart rate: ");
        String restingRate = in.next();
        double newRestingRate = Double.parseDouble(restingRate);
        
        System.out.print("\nEnter your heart rate after excercising: ");
        String exerciseRate = in.next();
        double newExerciseRate = Double.parseDouble(exerciseRate);
        System.out.println();
        
        double maximumRate = 220 - newAge;
        double heartRateReserve = maximumRate - newRestingRate;
        double upperEnd = ((heartRateReserve * 0.85) + newRestingRate); 
        double lowerEnd = ((heartRateReserve * 0.5) + newRestingRate);
        
        System.out.println("Your heart rate target zone is between " + (int)lowerEnd + " and " + (int)upperEnd);
        
        boolean inRange = newExcerciseRate;
        
        if(inRange)
            upperEnd >= newExcerciseRate >= lowerEnd;
            
        
        

        
        
        
        
        
        
       
       
        
        
        
        
        
         
    } 
}
