public class MyMath
{
    /** a)
     * This method taks the sum of four doubles and divides it by four
     * returning the mean of the four numbers.
     * 
     * 
     */
    public static double mean4(double a, double b, double c, double d)
    {
        return (a + b + c + d)/4;
    }
    /** b)
     * This metod finds the largest integer of a, b or c
     * 
     * 
     */
    public static int max3(int a, int b, int c)
    {
       if(a>b && a>c)
       return a;
       if(b>a && b>c)
       return b;
       return c;
    }
    /** c)
     * This method returns the ;argest double of a, b or c
     * 
     * 
     */
    public static double max3(double a,double b,double c)
    {
       if(a>b && a>c)
       return a;
       if(b>a && b>c)
       return b;
       return c;
    }
    /** d)
     * This method returns the factorial n (n!)
     * 
     * 
     */
    public static long factorial(int n)
    {
       long result = 1;
       int counter = 2;
       while (counter <= n)
       {
           result = result * counter;
           counter++;
       }
       return result;
    }
    /** e)
     * This method is used to calculate the binomial coefficient of 
     * integers n and k
     * 
     * 
     */
    public static long biCoeff(int n, int k)
    {
       long result = 0;
       int counter = 0;
       if(n<=k)
       {
         System.out.println("Error");
         return 0;
       }
       else
       {
          result = factorial(n)/(factorial(k)*factorial(n-k));
          return result;
       }
    }
    /** f)
     * This method calculate long a to the power of long power b (a^b)
     * 
     * 
     */
    public static long power(long a, long b)
    {
        return (long)Math.pow((double)a,(double)b);
    }
    /** g)
     * This method claculates the sum of the natural numbers from 1 to
     * n
     * 
     * 
     */
    public static int sum(int n)
    {
        int i = 1;
        int sum = 0;
        while(i <= n)
        {
            sum = sum + i;
            i++;
        }
        return sum = n;
    }
    /** h)
     * This method calculates the product of numbers in the range m to
     * n inlusive (m*[m + 1]*[m + 2]*....n)
     * 
     * 
     */ 
    public static long product(long m, long n)
    {
        long result = m;
        for(int i = m+1; i<= n; i++)
        {
            result *= i;
        }
        System.out.println("m: " + m +"\nn: " + n + "\nAnswer : " + result);
        return result;
    }
    }
}