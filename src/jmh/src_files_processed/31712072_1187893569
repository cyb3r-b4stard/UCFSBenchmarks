
public class ContactDetails
{
    private String address;
    private String town;
    private int zipCode;
    private String phoneNumber;
    
    public ContactDetails(String anAddress, String aTown, int aZipCode, String aPhoneNumber)
    {
       address = anAddress;
       town = aTown;
       zipCode = aZipCode;
       phoneNumber = aPhoneNumber;
    }
    public String getPhoneNumber()
    {
        return phoneNumber;
    }
    public void setFullAddress(String anAddress, String aTown, int aZipCode)
    {
        address = anAddress;
        town = aTown;
        zipCode = aZipCode;
    }
    public String getFullAddress()
    {    String s = '"';
        if( (address && town) != null && zipCode !=0 );
        {  s= address + town + zipCode;
           return s;
        }
        else 
        {
          s = "Missing address info. Please update the address.";
        }
    }
}