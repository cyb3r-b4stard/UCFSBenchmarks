
/**
 * ####### # ######### ## ###### ######### ####.
 * 
 * @###### (###### ####### #####) 
 * @####### (##/##/##)
 */
public class Motorista extends Empresa{
    
   public class Gestor extends Empresa{
    
 private double kmvalor;
 private double kmpercorridos;

   public Gestor(String codigo,String nome, int n_dias, double salDia, double kmvalor, double kmpercorridos){
       super(codigo,nome,n_dias, salDia);
       this.kmvalor=kmvalor;
       this.kmpercorridos=kmpercorridos;
   }
   
   public double getkmvalor(){
       return kmvalor;
    }
    
    public double getkmpercorridos(){
        return kmpercorridos;
    }
    
   public void setkmvalor(double kmvalor){
       this.kmvalor = kmvalor;
    }
    
   public void setkmpercorridos(double kmpercorridos){
       this.kmpercorridos=kmpercorridos;
    }
   
   public double salario() { 
       return this.getN_dias()*getSalDia()+ (kmvalor * kmpercorridos); 
   }
   
   public String toString() 
   {
       return super.toString() + " " + this.salario() + " euros \n";
   }
   
   public Gestor clone() {
       return new Gestor(this.getCodigo(),this.getnome(),this.getN_dias(),this.getSalDia(),this.kmvalor,this.kmpercorridos);
   }
}