            if (choix == 1) {
              
                ajoutCours();
                
            } else if (choix == 2) {
                
                supprimerCours();
                
            } else if (choix == 3) {
                
                horaire();
                
            } else if (choix == 4) {
                
                supprimerTousCours();
                
            }
           */         
        }
        
        System.out.print("FIN NORMALE DU PROGRAMME.");
    }
}