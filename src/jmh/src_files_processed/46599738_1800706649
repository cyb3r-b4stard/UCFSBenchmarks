import kareltherobot. *;

public class roomPicker extends Robot
{
    public roomPicker(int s, int a, Direction d, int b)
    {
        super(s, a, d, b);
    }
    public void pickRoom()
    {
        int y = 0;
        while(nextToABeeper())
        {
            pickBeeper();
            y++;
        }
        
    }
    public void countBeeper()
    {  
       int beeps = 0;
       pickBeeper();
       beeps++;
    
    
    } 
    public void Decide()
    {
    if(countBeeper()%2 = 0)
    {
        turnLeft();
    }
    else
    {
        turnLeft();
        turnLeft();
        turnLeft();
    }
    move();
    }
}