    public static double findAve(int[]scores)
    {
        int sum = 0;
        for(int i = 0; i < scores.length; i++){
            if(scores[i]!=-1){
                sum+=scores[i];
            }
        }
        return sum;
    }
    
    public static int findName(String item, String[]names)
    {
        for(int i = 0; i < names.length; i++){
            if(names[i] .equals(item){
                return i;
            }
        }
        return -1;
    }
    
