import java.util.*;
public class NamesTester
{
    public static void main(String args[])
    {
        String[] nameArray = new String[100];
        ArrayList nameList = new ArrayList();
        Scanner input = new Scanner(System.in);
        String holder = null;
        boolean isName = true;
        int x = 0;
        System.out.println("Please input no more than 100 names. To stop input names," +
        "just hit the enter key with no name");
        while(isName && x < 100)
        {
            holder = input.next();
            nameArray[x] = holder;
            nameList.add(holder);
            if(holder.equals(""))
            {
                isName = false;
            }
            x++;
        }
        System.out.println("Names in the array are: ")
        x = 0;
        isName = true;
        while(isName)
        {
            System.out.print(nameArray[x] + ", ")
            x++;
            if(nameArray[x].equals(""))
            {
                isName = false;
            }
        }
    }
}