import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Driver
{
    static JLabel wins;
    static JLabel sticksLeft;
    static JTextField input;
    static JButton take;
    public static void main(String [] args)
    {
        JFrame window;
        
        JPanel p = new JPanel();
        
        window = new JFrame ();
        window.setLayout(new BorderLayout());
        
        wins = new JLabel("Wins");
        sticksLeft = new JLabel("Sticks left");
        
        JButton reset = new JButton("Reset");
        take = new JButton("Take");
        
        p.setLayout(new BorderLayout());
        p.add(reset,BorderLayout.NORTH);
        p.add(take,BorderLayout.SOUTH);
        
        reset.addActionListener(new ActionListener()
        {  
          public void actionPerformed (ActionEvent e)
         {
          sticksLeft.setText("Sticks left:"+ 15);
         }
        });
        take.addActionListener(new ActionListener()
        {
            public void actionPerformed (ActionEvent d)
            {
                switch (int take)
                {
                case 1: sticksLeft.setText("Sticks left:" + nim.sticksLeft);
                case 2: sticksLeft.setText("Sticks left:" + 13);
                case 3: sticksLeft.setText("Sticks left:" + 12);
                default: System.out.print("Invalid input");
                }
            }
        });
        input = new JTextField();
        
        input.setColumns(10);
        
        window.add(wins,BorderLayout.NORTH);
        window.add(sticksLeft,BorderLayout.SOUTH);
        window.add(p,BorderLayout.WEST);
        window.add(input,BorderLayout.EAST);
        
        window.setSize(300,200);
        window.setVisible(true);
        
        
            
        }
        
            }

