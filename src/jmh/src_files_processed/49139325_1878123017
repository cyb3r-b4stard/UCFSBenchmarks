public abstract class Niederschlag
{
    /** Attribute */
    protected double x, y;     
    protected double vx,vy;    
    protected int    r;        
    
    /** Referenzattribute */
    protected Zeichenfenster fenster;
    
    /** Konstruktor */
    public Niederschlag(double xStart, double yStart, int radius, Zeichenfenster window)
    {
        fenster = window;
        x  = xStart;
        y  = yStart;
        vx =  2.7;
        vy = 31.3;
        r  = radius;
        zeichne();
    }

    /** Weitere Methoden */
    public abstract void zeichne()
    
    public void bewege(double zeit)
    {
        x = x + vx*zeit;
        y = y + vy*zeit;
        zeichne();
    }
}