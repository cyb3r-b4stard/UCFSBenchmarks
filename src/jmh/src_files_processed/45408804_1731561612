import javax.swing.*;
import java.awt.*;
import java.awt.Color;
import java.awt.event.*;
/**
 
 * This BunnyEarCount class calculates the number of bunny ears in a line of bunnies with some having 
  two ears and some having five ears. The odd numbered bunnies (1,3,5 etc) have the normal two ears each,
  while the even numbered bunnies (2,4,6 etc) have a mutation and have five ears each. The user will input
  a number that signifies how many bunnies there are and the program will calculate the number of ears in
  that group using recursion. 
  
 * Tomas Keno
 
 * 02/18/2017
 
 */
public class BunnyEarCount extends JFrame 
{
   static JFrame frame;
   static JPanel panel;
   static JButton button;
   static JTextField numberOfBunniesField;
   static JTextField numberOfEarsField;
   static JLabel numberOfBunniesLabel;
   static JLabel numberOfEarsLabel;
   
    public static void main(String[] args)
   {
       frame = new JFrame();
       panel = new JPanel();
       button = new JButton("GET EAR COUNT");
       numberOfBunniesField = new JTextField(10);
       numberOfEarsField = new JTextField(10);
       numberOfBunniesLabel = new JLabel("Enter Number of Bunnies: ");
       numberOfEarsLabel = new JLabel("Number of Ears");
       
       numberOfBunniesLabel.setLabelFor(numberOfBunniesField);
       numberOfEarsLabel.setLabelFor(numberOfEarsField);
       
       panel.add(numberOfBunniesLabel);
       panel.add(numberOfBunniesField);
       panel.add(button);
       panel.add(numberOfEarsLabel);
       panel.add(numberOfEarsField);
       numberOfEarsField.setEditable(false);
       button.addActionListener(new ClickListener());
       
       frame.setSize(650, 125);
       frame.getContentPane().setBackground(Color.YELLOW);
       frame.add(panel);
       frame.setTitle("Bunny Ear Calculator");
       frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
       frame.setVisible(true);
       
       
 
    }
    public long countDaEars(long index)
                   {    
                       while(index != 0)
                       {
                       if (index == 1)
                       return 2;
                       else if (index == 2)
                       return 5;
                       else 
                       return countDaEars(index - 1) + countDaEars(index - 2);
                    }   
                }      
    static class ClickListener implements ActionListener 
   {
       public void ActionPerformed(ActionEvent event) 
       {
               int value1 = Integer.parseInt(numberOfBunniesField.getText());
               int value2 = numberOfEarsField;
               int index = value1;
                   
               value2.countDaEars(getText());
               
                    }
               
                   
                }
       
               
               
           
               
               
               
               
               
        }
       
       
    





