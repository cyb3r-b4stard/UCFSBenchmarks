public class Sub
{
    public void main (int n, int g)
    {
        switch(g)
        {
            case 1:
            int s=n;
            int c;
            while(s!=0)
            {
                int b =s%10;
                c=(c*10)+b;
                s=s/10;
            }
            if(c==n)
                System.out.println("The entered number is a pallindrome");
            else
                System.out.println("The entered is not a pallindrome");
            break;
             
            case2:
            int p=0;
             for(int i=1;i<=n;i++)
             {
                 if(n%i==0)
                 p=p+i;
                }
                if(p==n)
                 System.out.println("The entered number is a perfect number");
                 else
                  System.out.println("The entered number is not a perfect number");
                  break;
                  default;
                   System.out.println("Please make a choise between 1 and 2");
                }
            }
        }
             
