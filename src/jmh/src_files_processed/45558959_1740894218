
/**
 * ##### # ########### ## ##### #################### ####.
 * #### ####### # ########## ##########. ## ##### ##### ## ###### 
 * ### #### ### # ########## ####.
 * @######## ######### 
 * @#/##/##
 */
public class BasketballScoreboard
{
    public int homeScore;
    public int awayScore;
    public int minutes;
    public double seconds;
    public int periods;
    public int timeOutsHome;
    public int timeOutsAway;
    public int foulsHome;
    public int foulsAway;
    public int fouls;
    public boolean overtime;
    /**
     * Constructor for objects of class BasketballScoreboard
     */
    public BasketballScoreboard()
    {
        homeScore = 0;
        awayScore = 0;
        minutes = 12;
        seconds = 0;
        periods = 1; 
        timeOutsHome;
        timeOutsAway;
        foulsHome;
        foulsAway
        fouls;
        timeOuts = 6; 
        fouls = 0;
        overtime = false;
    }

    /**
     * This method adds one point to home side.
     * 
     * @param  There are no parameters
     * @return There are no returns. 
     */
    public void homeOnePt()
    {
       homeScore = homeScore + 1;
    }
    
    /**
     * This method adds two points to home side.
     * 
     * @param  There are no parameters
     * @return There are no returns. 
     */
    public void homeTwoPt()
    {
       homeScore = homeScore + 2;
    }
    
    /**
     * This method adds three points to home side.
     * 
     * @param  There are no parameters
     * @return There are no returns. 
     */
    public void homeThreePt()
    {
       homeScore = homeScore + 3;
    }
    
    /**
     * This method adds one point to home side.
     * 
     * @param  There are no parameters
     * @return There are no returns. 
     */
    public void awayOnePt()
    {
       homeScore = homeScore + 1;
    }
    
    /**
     * This method adds two points to home side.
     * 
     * @param  There are no parameters
     * @return There are no returns. 
     */
    public void awayTwoPt()
    {
       homeScore = homeScore + 2;
    }
    
    /**
     * This method adds three points to home side.
     * 
     * @param  There are no parameters
     * @return There are no returns. 
     */
    public void awayThreePt()
    {
       homeScore = homeScore + 3;
    }
    
    /**
     * This method adds one to the Period. This will activate overtime if it is already period 4
     * 
     * @param   There are no parameters.
     * @return  There are no returns.
     */
    public 
    {
        if(periods < 4){
            periods = periods = 1
    }
}