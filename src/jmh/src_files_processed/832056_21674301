import java.util.Scanner;
import java.io.File;
import java.io.PrintWriter;
import java.io.FileNotFoundException;
public class WordsInput
{
    public static void main(String[] args) throws FileNotFoundException
    {
        Scanner in = new Scanner(System.in);
        Scanner inf = new Scanner(new File("D:\\words.txt"));
        
        int lines = 0;
        int laatste = 0;
        
        while (inf.hasNextLine() && laatste == 0)
        {
            String line1 = inf.nextLine();
            if (line1.charAt(1) == -)
            {
                laatste = 1;
            }
            else
            {
            lines++;
            }
        }
        inf.close();
        
        System.out.println("Aantal woorden: " + lines);
    }
}