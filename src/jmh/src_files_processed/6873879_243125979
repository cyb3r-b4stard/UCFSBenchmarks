import java.util.Scanner;

public class Client
{
    public class Sandwich
    {
        private String sauce;
        private String bread;
        private String meat;
        private String cheese;
        private boolean temperature;
        
        public Sandwich()
        {
            sauce = "Unknown";
            bread = "Unknown";
            meat = "Unknown";
            cheese = "Unknown";
            temperature = true;
        }
        
    public Sandwich(String newSauce, String newBread, String newMeat, String newCheese, boolean newTemp)
    {
        sauce = newSauce;
        bread = newBread;
        meat = newMeat;
        cheese = newCheese;
        temperature = newTemp;
    }
    
    public String getSauce()
    {
        return sauce;
    }
    public String getBread()
    {
        return bread;
    }
    public String getMeat()
    {
        return meat;
    }
    public String getCheese()
    {
        return cheese;
    }
    public boolean getTemperature()
    {
        return temperature;
    }
    
    public void setSauce(String newSauce)
    {
        sauce = newSauce;
    }
        public void setMeat(String newMeat)
    {
        meat = newMeat;
    }
    public void setBread(String newBread)
    {
        bread = newBread;
    }
    public void setCheese(String newCheese)
    {
        cheese = newCheese;
    }
    public void setTemperature(String newTemperature)
    {
        temperature = newTemp;
    }
    
    public String toString()
    {
        String out = "This is a sandwich in " + bread + " bread with : " +
             sauce + " and " + cheese + " cheese and double " + meat +
             (temperature == true? " Grilled ":" Cold ");
             return out;
    }
    
    public boolean equals(Sandwich other)
    {
        boolean outcome = false;
        if(sauce.equals(other.getSauce()) &&
           meat.equals(other.getMeat()) &&
           bread.equals(other.getBread()) &&
           cheese.equals(other.getCheese()) &&
           temperature == other.getTemperature())
           outcome = true;
           return outcome;
    }
    
}
