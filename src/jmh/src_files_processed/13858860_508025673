import javax.swing.JOptionPane;

public class DivideEven extends Object
{
    private int itsOne;
    private int itsTwo;
    
    public void DivideEven(int one, int two)
    {
        itsOne = one;
        itsTwo = two;
        if (one % two = 0 || two % one = 0)
            JOptionPane.showMessageDialog (null, "Your numbers divide evenly");
        else
            JOptionPane.showMessageDialog (null, "Your numbers don't divide evenly");
    }
    public void askFirstNumber()
    {
        one = JOptionPane.showInputDialog ("What is your first number?");
        return one;
    }
    public void askSecondNumber()
    {
        two = JOptionPane.showInputDialog ("What is your second number?");
        return two;
    }
    public static void main (String []args)
    {
        DivideEven sam;
        sam = new DivideEven();
        sam.DivideEven();
    }
}