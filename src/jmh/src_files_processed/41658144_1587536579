    public static void main(String args[])throws IOException    
    {
        int Cchoice;
        int c1;
        InputStreamReader read=new InputStreamReader(System.in);
        BufferedReader br=new BufferedReader(read);
        System.out.println("Enter your choice");
        System.out.println("1. Handcricket");
        System.out.println("2. KBC");
        System.out.println("3. Hangman");
        c1=Integer.parseInt(br.readLine());
        Cchoice=(int)((Math.random()*10)+1);
        int abc,def,ghi;
        switch(c1)
        {
            case 1:
            {

                String name; 
                int i=0;
                int j=0; 
                int plyr;
                int comp; 
                int end=0; 
                int P_score=0; 
                int C_score=0;
                int ch;
                int infinity=1;       
                while(infinity>0)
                {
                    infinity=1; P_score=0; C_score=0;   
                    System.out.println("WELCOME TO THE GAME...");
                    System.out.println("===========================================================");
                    System.out.print("Enter Your Name: ");
                    name=br.readLine();             
                    System.out.println("===========================================================");

                    System.out.println("Welcome to the game "+name+",");
                    System.out.println("LETS PLAY HANDCRICKET!");
                    System.out.println("Instructions:");
                    System.out.println("You Will Bat First. Enter Any Number From 1 To 10.");
                    System.out.println("Your Score will be updated as per every Input.");
                    System.out.println("If The Number Entered By The Computer Is Same As The Number Entered By You,");
                    System.out.println("You Will Be Declared As Out.");
                    System.out.println("NOTE -> The number you Enter cannot exceed 10. If it Exceeds 10, Game will End.");
                    System.out.println("Your Final Score Will Be The Sum Of The Numbers You Entered Before Getting Out.");
                    System.out.println("While Bowling,");
                    System.out.println("Try To Enter A Number Similar To The Number Entered By The Computer.");
                    System.out.println("If The Sum Of Numbers Entered By The Computer Becomes More Than Your Score, Computer Wins.");
                    System.out.println("But If You Enter A Number Same As The Number Entered By The Computer, You Win!");                

                    System.out.println("===========================================================");

                    System.out.println("TIME TO BAT...");
                    for(j=1;j>0;j++)
                    {
                        System.out.println("BALL "+j+"-");
                        System.out.print("Enter Your Number: ");
                        plyr=Integer.parseInt(br.readLine());
                        comp=(int)(((Math.random())*10)+1);
                        System.out.println("Computer's Number: "+comp);

                        if(plyr == comp)
                        {
                            System.out.println("$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$");
                            System.out.println("Thats OUT!");
                            System.out.println("YOUR TOTAL SCORE = "+P_score);
                            System.out.println("$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$");
                            break;
                        }

                        else if(plyr>0 && plyr<=10) 
                            P_score=P_score+plyr; 
                        else if(plyr>10 || plyr<=0)
                        {
                            System.out.println("===============================================================================");
                            System.out.println("Invalid Input. Game Over!");
                            end++;
                            break;
                        }    
                        System.out.println("Your Current Score Is "+P_score);
                        System.out.println("-----------------------------------------------------------------------------------------");                        
                    }

                    for(i=0;i<=2;i++) 
                    {
                        if(end>0)
                        {
                            break;
                        }                        
                    }
                    System.out.println("====================================");
                    for(i=0;i<1;i++) 
                    {
                        if(end>0)
                        {
                            break;
                        }
                        System.out.println("BOWLING TIME...");
                    }

                    for(i=0;i<=2;i++) 
                    { 
                        if(end>0)
                        {
                            break;
                        }                        
                    }
                    System.out.println("====================================");
                    for(j=1;j>0;j++)
                    {
                        if(end>0)
                        {
                            break;
                        }
                        System.out.println("BALL "+j+"-");
                        System.out.print("Enter Your Number: ");
                        plyr=Integer.parseInt(br.readLine());
                        comp=(int)(((Math.random())*10)+1);
                        System.out.println("Computer's Number: "+comp);
                        System.out.println("*****************************************");                        
                        if(comp==plyr)
                        {
                            System.out.println("$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$");
                            System.out.println("WICKET! COMPUTER IS GONE!");
                            System.out.println("COMPUTER'S TOTAL SCORE = "+C_score);
                            System.out.println("$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$");
                            break;                            
                        }
                        else if(plyr>0 && plyr<=10)
                            C_score=C_score+comp;
                        else if(plyr>10 || plyr<=0)
                        {
                            System.out.println("===================================="); 
                            System.out.println("====================================");                             
                            System.out.println("Invalid Input. Game Over!"); 
                            end++;
                            break;
                        } 
                        if(C_score>P_score)
                        {
                            System.out.println("THE COMPUTER HAS SCORED MORE THAN YOUR SCORE.");
                            System.out.println("*****************************************");
                            System.out.println("COMPUTER'S TOTAL SCORE = "+C_score);
                            System.out.println("*****************************************");
                            break;
                        }                        
                        System.out.println("Computer's Current Score Is "+C_score);
                        System.out.println("-----------------------------------------------------------------------------------------");
                    }

                    for(i=0;i<=2;i++) 
                    { 
                        if(end>0)
                        {
                            break;
                        }

                        System.out.println("====================================");
                    }

                    for(j=0;j<1;j++)
                    { 
                        if(end>0)
                        {
                            break;
                        }
                        System.out.println("*****************************************");
                        System.out.println("YOUR TOTAL SCORE = "+P_score);
                        System.out.println("COMPUTER'S TOTAL SCORE = "+C_score);
                        System.out.println("*****************************************");
                        if((P_score)>(C_score))
                        {
                            System.out.println("Congratulations "+name+"!! You Have Won the Match against the Computer!");
                        }

                        else if((P_score)<(C_score))
                        {
                            System.out.println("Sorry "+name+", But The Computer Has Defeated You..!");
                        }

                        else
                        {
                            System.out.println("Match Draw..!");
                        }

                    }
                    System.out.println("====================================");                    

                    System.out.println("Enter 1 to Play This Game Again.");
                    System.out.println("Enter 0 to Quit.");
                    abc=Integer.parseInt(br.readLine());                
                    if(abc==1)
                    {
                        System.out.print('\f');
                    }

                    else
                    {
                        System.out.print('\f');
                        System.out.println("Good Bye!");
                        break;
                    }                
                }
                break;
            }
            case 2:
            {

                int score=0;

                System.out.println("TOTAL SCORE will be calculated as per performance in all stages");
                System.out.println("GAME OVER if any question is answered wrong");
                System.out.println("Select Option number to select your Choice..");
                System.out.println("This Quiz has 3 Stages-");
                System.out.println("1. Maths");
                System.out.println("2. Science");
                System.out.println("3. General Knowledge(GK)");
                System.out.println("Enter a number to start a respective stage-");
                System.out.println("NOTE - You may not play a stage prior to which you have selected.");
                System.out.println("Eg→If you select Stage 2, You may not play Stage 1...");
                System.out.println("Best Of Luck!☻");
                System.out.println("--------------------------------------------------------------");
                System.out.println("ENTER YOUR CHOICE");
                int ch = Integer.parseInt(br.readLine());
                infinity=1;
                while(infinity>0)
                {
                    switch(ch)
                    {
                        case 1:

                        int scor=0;
                        System.out.println("Q1.(5+10)*(3-3)=?");
                        System.out.println("1.90  2.15  3.-90  4.0");
                        int ch1=Integer.parseInt(br.readLine());
                        if(ch1==4)
                        {
                            scor++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Q2. 12*12=?");
                        System.out.println("1.120   2.144  3.140  4.154");
                        int ch2=Integer.parseInt(br.readLine());
                        if(ch2==2)
                        { 
                            scor++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Q3.99 * 99 ");
                        System.out.println("1.9999   2.9801  3.1425  4.154");
                        int ch17=Integer.parseInt(br.readLine());
                        if(ch17==2)
                        { 
                            scor++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Q4.What is the cube root of 1331*1331 ");
                        System.out.println("1.11431   2.1331  3. 121  4.11");
                        int ch145=Integer.parseInt(br.readLine());
                        if(ch145==3)
                        { 
                            scor++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Score In Maths Quiz="+scor);
                        System.out.println("--------------------------------------------------------------");
                        break;

                        case 2:
                        int score1=0;
                        System.out.println("Science Quiz");
                        System.out.println("Q1. Pythagoras Theorem is applicable only to ___________.");
                        System.out.println("1.Right Angle Triangles  2.Acute Angle Triangles  3.Obtuse Angle Triangles 4.Equliateral Triangles");
                        int ch3=Integer.parseInt(br.readLine());
                        if(ch3==1)
                        {
                            score1++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Who coined the term cell?");
                        int ch4;
                        System.out.println("1.Robert Downey Jr.  2.Robert Lewandowski  3.Robert Hooke  4.Robert Frost");
                        ch4=Integer.parseInt(br.readLine());
                        if(ch4==3)
                        {
                            score1++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Which disease  did Gregor Mendel suffer from?");
                        int ch19;
                        System.out.println("1.Leprosy  2.Color Blindness  3.Polio  4.Haemophilia");
                        ch19=Integer.parseInt(br.readLine());
                        if(ch19==2)
                        {
                            score1++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Who derived the formula F = ma");
                        int ch24;
                        System.out.println("1.Robert Downey Jr.  2.Isaac Newton  3.Robert Hooke  4.Charls lopenter");
                        ch24=Integer.parseInt(br.readLine());
                        if(ch24==4)
                        {
                            score1++;
