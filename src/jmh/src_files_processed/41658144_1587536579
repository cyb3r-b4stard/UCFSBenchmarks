                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }
                        System.out.println("Score In Science Quiz="+score1);
                        System.out.println("--------------------------------------------------------------");
                        break;
                        case 3:
                        int score2=0;
                        int ch5;
                        System.out.println("GK Quiz");
                        System.out.println("Q1 Who was the President Of India before Smt.Pratibha Patel?");
                        System.out.println("1.Shri Pranab Mukherjee 2.Dr.Rajendra Prasad 3.APJ Abdul Kalam 4.Dr.Sarvapalli RadhaKrishnan");
                        ch5=Integer.parseInt(br.readLine());
                        if(ch5==3)
                        {
                            score2++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer, GAME OVER!");
                            break;
                        }

                        int ch6;
                        System.out.println("GK Quiz");
                        System.out.println("Q2. Lamborghini used to earlier manufacture ___________.");
                        System.out.println("1.Transport Trucks 2.Bicycles 3.Buses 4.Tractors");
                        ch6=Integer.parseInt(br.readLine());
                        if(ch6==4)
                        {
                            score2++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer");
                            break;
                        }

                        int ch26;
                        System.out.println("GK Quiz");
                        System.out.println("Q2. Who is the speaker of Lok Sabha");
                        System.out.println("1.Meena Kumari 2.Sumitra Mahajan 3.Narendra  Modi 4.Hillary Clinton");
                        ch26=Integer.parseInt(br.readLine());
                        if(ch26==2)
                        {
                            score2++;
                            score++;
                        }
                        else
                        {
                            System.out.println("Wrong Answer");
                            break;
                        }
                        System.out.println("Score In GK Quiz="+score2);
                        default:
                        System.out.println("Invalid Option");
                    }
                    System.out.println("=================================================================");
                    System.out.println("Total score="+score);
                    if(score==4||score==3)
                        System.out.println("You were Excellent!Very Well Played");
                    if(score==2)
                        System.out.println("Good Try! Well Played");
                    if(score<=2)
                        System.out.println("You Need to Improvise! Better luck next time");

                    System.out.println("Enter 1 to Play This Game Again.");
                    System.out.println("Enter 0 to Quit.");
                    def=Integer.parseInt(br.readLine());                
                    if(def==1)
                    {
                        System.out.print('\f');
                    }

                    else
                    {
                        System.out.print('\f');
                        System.out.println("Good Bye!");
                        break;
                    }
                    break;
                }
                
                case 3:
                
                    GAMING_ZONE obj = new GAMING_ZONE ();
                    InputStreamReader isr = new InputStreamReader(System.in);
                    BufferedReader in = new BufferedReader(isr);
                    PrintWriter p = new PrintWriter(System.out,true);
                    p.println("Lets play HANGMAN");
                    p.println();
                    p.println("Enter your choice according to the following options.\nNOTE: Words are related to the topics given below.\n\n1. Sports\n2. Movies\n3. Computer\n4. Food\n5. Countries");
                    p.println();
                    obj.Sports();
                    obj.Movies();
                    obj.Computers();
                    obj.Food();
                    obj.Countries();

                    int choice = Integer.parseInt(in.readLine());
                    obj.clearScreen();
                    String bothwordandclue[] = new String[2];
                    if(choice == 1)
                        bothwordandclue = obj.Sports();
                    else if(choice == 2)
                        bothwordandclue = obj.Movies();
                    else if(choice == 3)
                        bothwordandclue = obj.Computers();
                    else if(choice == 4)
                        bothwordandclue = obj.Food();
                    else if(choice == 5)
                        bothwordandclue = obj.Countries();
                    else
                        p.println("Wrong choice");
                    int ctr = 6;
                    String guessword = bothwordandclue[0];
                    String wordclue = bothwordandclue[1];
                    int lword = (int)(Math.round(((double)guessword.length()/2)));
                    int checkguess = 0;
                    String a;
                    String guesses[] = new String[50];
                    StringBuffer guessit = new StringBuffer();
                    for (int i = 0;i<lword;i++)
                        guessit = guessit.append("_ ");
                    guessit.delete((2 * lword)-1,(2 * lword));
                    int index = guessword.indexOf("|");
                    while(index >= 0)
                    {
                        guessit.setCharAt(index, '|');
                        index = guessword.indexOf("|", index+1);
                    }
                    p.println(guessit + "\t\t\t\t\t\t\t\t\t The letters you have entered so far");
                    do
                    {
                        p.println();
                        if(ctr == 6)
                            obj.Hang1();
                        else if(ctr == 5)
                            obj.Hang2();
                        else if(ctr == 4)
                            obj.Hang3();
                        else if(ctr == 3)
                            obj.Hang4();
                        else if(ctr == 2)
                            obj.Hang5();
                        else if(ctr == 1)
                            obj.Hang6();
                        p.println();
                        p.println("CLUE : "+" "+wordclue);

                        p.println("Enter your guess letter");
                        String guessletter2 = br.readLine();
                        String guessletter = guessletter2.toUpperCase();
                        obj.clearScreen();
                        for(int i = 0;i<lword;i++)
                        {
                            if(guessletter.charAt(0) == guessword.charAt(2*i))
                            {
                                guessit.setCharAt(2*i,guessletter.charAt(0));
                                checkguess=1;
                            }                
                        }
                        if(checkguess == 1)
                        {
                            p.println("Correct Guess. You have " + ctr + " incorrect guesses left\t\t\t\t\t\t\t The letters you have entered so far");
                            p.println(guessit);
                        }
                        else
                        {
                            ctr--;
                            if(ctr == 0)
                            {
                                p.println("Wrong guess. You hanged the man :(");
                                p.println(guessit);
                                obj.Hang7();
                            }
                            else
                            {
                                p.println("Wrong guess. You have " + ctr + " incorrect guesses left\t\t\t\t\t\t\t\t\t The letters you have entered so far");
                                p.println(guessit);
                            }
                        }
                        checkguess = 0;
                        if(ctr == 0)
                            p.println("\nSorry you lost the game\n\nThe correct word is " + guessword);
                        a = guessit.toString();
                        if(a.equals(guessword))
                        {
                            p.println("You guessed the word!!!!!");
                            ctr=0;
                        }        
                    }while(ctr>0);
                }
                System.out.println("Enter 1 to Play This Game Again.");
                System.out.println("Enter 0 to Quit.");
                ghi=Integer.parseInt(br.readLine());                
                if(ghi==1)
                {
                    System.out.print('\f');
                }

                else
                {
                    System.out.print('\f');
                    System.out.println("Good Bye!");
                    break;
                }                
            }
        }
    }