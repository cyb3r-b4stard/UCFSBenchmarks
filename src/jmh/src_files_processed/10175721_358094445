public class KevinSAssignmentOne
{
    public static int largest(int x, int y)
    {
        if (x > y)
        {return x;}
        else
        {return y;}
    }
    
    public static int smallest(int x, int y)
    {
        if (x < y)
        {return x;}
        else
        {return y;}
    }
    
    public static int smallest(int x, int y, int z)
    {
        if (z <= x && z <= y)
        {return z;}
        if (x <= z && x <= y)
        {return x;}
        else
        {return y;}
    }
    
