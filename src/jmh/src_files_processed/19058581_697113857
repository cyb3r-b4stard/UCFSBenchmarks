public class Videoclub {
    
private Arriendo arriendo1;
private Arriendo arriendo2;
   public Videoclub() {
        this.arriendo1 = null;
        this.arriendo2 = null;
    }
    public Arriendo getArriendo1() {
        return arriendo1;
    }

    public void setArriendo1(Arriendo arriendo1) {
        this.arriendo1 = arriendo1;
    }

    public Arriendo getArriendo2() {
        return arriendo2;
    }

    public void setArriendo2(Arriendo arriendo2) {
        this.arriendo2 = arriendo2;
    }

/**En la clase VideoClub escriba un método cuyo parámetro de 
 * entrada sea un objeto del tipo Arriendo el cual será almacenado
 * en el campo arriendo1 siempre y cuando el género de la película 
 * sea “terror” y posea una duración mayor a 90 minutos */

public void cargarArriendoUno (Arriendo arriendo) {
    if (arriendo.getPelicula().getGenero().equals("terror") &&
    arriendo.getPelicula().getDuracionMin()>90)
    {
        this.arriendo1 = arriendo;
    }
}
/**. En la clase VideoClub escriba un método cuyo parámetro 
 * de entrada sea un objeto del tipo Arriendo el cual será 
 * almacenado en el campo arriendo2 siempre y cuando este sea se
 * haya arrendado en el mes de “noviembre” */
 
 public void cargarArriendoDos (Arriendo arriendo) {
     if(arriendo.getFechaArriendo().getMes().equalsIgnoreCase("noviembre"))
     {
         this.arriendo2 = arriendo;
        }
}
/**En la clase VideoClub escriba un método sin parámetro 
de entrada el cual aumentara la duración
 de la película en 10 min. si es de género 
 “accion”  y 20 si es de género “comedia”*/
 
 public void aumentarDuracionPelicula () {
    if(arriendo1!=null){
        if(arriendo1.getPelicula().getGenero().equalsIgnoreCase("accion")){
            arriendo1.getPelicula().setDuracionMin (
            arriendo1.getPelicula().getDuracionMin()+10);
        }
         if(arriendo1.getPelicula().getGenero().equalsIgnoreCase("comedia")){
            arriendo1.getPelicula().setDuracionMin (
            arriendo1.getPelicula().getDuracionMin()+20);
        }
    }else
        System.out.println("El arriendo No existe");
     
        if(arriendo2!=null){
        if(arriendo2.getPelicula().getGenero().equalsIgnoreCase("accion")){
            arriendo2.getPelicula().setDuracionMin (
            arriendo2.getPelicula().getDuracionMin()+10);
        }
         if(arriendo2.getPelicula().getGenero().equalsIgnoreCase("comedia")){
            arriendo2.getPelicula().setDuracionMin (
            arriendo2.getPelicula().getDuracionMin()+20);
        }
    }else
        System.out.println("El arriendo No existe");
    }
    /**En la clase VideoClub escriba un método que imprima con 
    respecto al arriendo1 los siguientes campos:
•	El nombre de la película, 
•	El nombre del socio y 
•	La fecha de arriendo (dd/mm/aa) 
*/
 public void imprimirArriendoUno () {
    System.out.println("****INFO ARRIENDO 1****");
    System.out.println("Nombre de la Pelicula:" +arriendo1.getPelicula().getNombre());
    System.out.println("Nombre del Socio:" +arriendo1.getNombreSocio());
    System.out.println("Fecha Arriendo:"  +arriendo1.getFechaArriendo().getDia()+ "/" +arriendo1.getFechaArriendo().getMes()"/"
    +arriendo1.getFechaArriendo().getMes());
    
    
    
    
    }
}