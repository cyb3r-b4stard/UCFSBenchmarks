import java.io.*;
class mainfunc
{
    public static void main()throws IOException
    {
        int i,n;        
        double acc_n,ba,m,b;
        String na;String x;char t;
        BufferedReader br=new BufferedReader(new InputStreamReader(System.in));

        System.out.println("Enter number of Account Holders:");
        n=Integer.parseInt(br.readLine());
        bankaccount ob[]=new bankaccount[n];
    
        for(i=0;i<n;i++)
        {
        
            System.out.println("Enter the name");
            na=br.readLine();
    
            System.out.println("Enter s for savings and c for current");
            x=br.readLine();
            t=x.charAt(0);
    
            System.out.println("Enter the account number ");
            acc_n=Double.parseDouble(br.readLine());
    
            System.out.println("Enter the balance in account ");
            ba=Double.parseDouble(br.readLine());
    
            ob[i]=new bankaccount(na,acc_n,t,ba);
            System.out.println("For withdrawl press 2 for deposit press 1");
            int y=Integer.parseInt(br.readLine());
            double trans;
            if(y==1)
             {
                 System.out.println("Enter ammount: ");
                 trans=Double.parseDouble(br.readLine());
                 ob[i].depositMoney(trans);
             }
            if(y==2)
            {
                System.out.println("Enter ammount: ");
                trans=Double.parseDouble(br.readLine());
                ob[i].withdrawMoney();
            else
                System.out.println("Wrong Choice");
        
        }
    
        for(i=0;i<n;i++)
        {
            ob[i].display();    
            System.out.println();
        }
   
    }
}