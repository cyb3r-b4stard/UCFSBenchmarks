
import kareltherobot.*;
import java.awt.Color;

public class Constracter extends Robot
{
    private Mason ken=new Mason(1,1,East,infinity,Color.red);
    private Roofer sue=new Roofer(1,1,East,infinity,Color.cyan);
    private Carpenter linda=new Carpenter(1,1,East,infinity,Color.blue);
    public Constracter(int s,int a, Direction d,int n,Color c)
    {
        super(s,a,d,n,c);
    }
    
    private void disperseTeam ()  
    {
        ken.turnLeft();
        ken.move();
        sue.move();
        linda.move()
        linda.turnLeft();
        linda.move();
    }
	
    public void buildHouse ()
	{
		disperseTeam ();
		ken.getToWork ();
		sue.getToWork ();
		linda.getToWork ();
	}

}
