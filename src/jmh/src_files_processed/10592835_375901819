/**
 * #### ## ##### ## ###########.
 * 
 * @###### #### ####
 * @####### #.#
 */
import java.lang.Calendar
public class Lamborghini
{
    private int modelYear;
    private String modelName;
    private double horsePower;
    private String manufacturer;
    private boolean rearWheelDrive;

    /**
     * Default constructor
     */
    public Lamborghini()
    {
    }

    /**
     * @param newModelYear - the model year of the Lamborghini
     * @param newModelName - the model name of the Lamborghini
     * @param newHorsePower - the horse power of the Lamborghini
     * @param isRearWheelDrive - the fornt or rear wheel drive of the Lamborghini
     */
    public Lamborghini(int newModelYear, String newModelName, double newHorsePower, boolean isRearWheelDrive)
    {
        manufacturer = "Lamborghini"; 

        if (newModelYear != 0){ 
            if(newModelYear < 1963){
                System.out.println(newModelYear + " is too early, sorry");
            }else if (newModelYear > 2014){
                System.out.println(newModelYear + " is too late, sorry");
            }
        }else {
            modelYear = newModelYear;
        }

        if (newModelName == null){
            System.out.println("a model name was not provided, sorry");
        }else{
            modelName = newModelName;
            System.out.println("model name has " + modelName.length() + " characters");
        }

        if (newHorsePower != 0){
            if(newHorsePower < 300){
                System.out.println(newHorsePower + " is too little, sorry");
            }else if (newHorsePower > 600){
                System.out.println(newHorsePower + " is too much, sorry");
            }else {                
                horsePower = newHorsePower;
            }
        }
        rearWheelDrive = isRearWheelDrive;
    }


    /**
     * @param model year of the Lamborghini must between 1963 and current year
     */
    public void setModelYear (int newModelYear ){
        int year = Calendar.getInstance().get(Calendar.YEAR);
        if (newModelYear != 0){
            if(newModelYear < 1963){
                System.out.println(newModelYear + " is too early, sorry");
            }else if (newModelYear > 2014){
                System.out.println(newModelYear + " is too late, sorry");
            }
        }else {
            modelYear = newModelYear;
        }
    }

    /**
     * @param model name of the Lamborghini can't be emperty
     */
    public void setModelName (String newModelName){
        if (newModelName == null){
            System.out.println("a model name was not provided, sorry");
        }else{
            modelName = newModelName;
            System.out.println("model name has " + modelName.length() + " characters");
        }
    }

    /**
     * @param horsepower of the Lamborghini must between 300 and 600
     */
    public void setHorsePower (double newHorsePower){
        if (newHorsePower != 0){
            if(newHorsePower < 300){
                System.out.println(newHorsePower + " is too little, sorry");
            }else if (newHorsePower > 600){
                System.out.println(newHorsePower + " is too much, sorry");
            }else {                
                horsePower = newHorsePower;
            }
        }
    }

    /**
     * @param wheel drive of the Lamborghini either rear wheel drive or front wheel drive
     */
    public void setWheelDrive(boolean isRearWheelDrive){
        if (isRearWheelDrive == true){ 
            System.out.println("Rear Wheel Drive");
        }else if (isRearWheelDrive == false){ 
            System.out.println("Front Wheel Drive"); 
        }
    }

    
    /**
     * @return the model of year of Lamborghini
     */
    public int getModelYear (){
        return modelYear;
    }

     /**
     * @return the name of model of Lamborghini
     */
    public String getModelName (){
        return modelName;
    }

     /**
     * @return the horsepoert of Lamborghini
     */
    public double getHorsePower (){
        return horsePower;
    }

     /**
     * @return the manufacturer 
     */
    public String getManufauturer(){
        return manufacturer;
    }

     /**
     * @return rear wheel or front wheel drive of the Lamborghini
     */
    public boolean getWheelDrive(){
        return rearWheelDrive;
    }


}
