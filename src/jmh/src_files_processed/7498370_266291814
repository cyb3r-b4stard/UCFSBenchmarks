import java.util.Scanner;
public class guessnumber{
    public static void main(String[] args){
        String again = "y";
        while(again.equals("y")){
        Scanner scan = new Scanner(System.in);
        int randomNum = 1 + (int)(Math.random()*100);
        System.out.println("I am thinking of a random number, guess what it is!");
        int guess = scan.nextInt();
        boolean isCorrect;
        int count = 0;
        if (randomNum==guess) { System.out.println("Congratulations, you guessed the number on your first try!");}
        
        else{ isCorrect = false;
            while(isCorrect == false){
                if (guess > randomNum) {System.out.println("Too high, guess again.");{
                isCorrect=false;
            count++;}
                else{
                if (guess < randomNum) {System.out.println("Too low, guess again.");{
                count++;
                isCorrect=false;}
                else {isCorrect = true; }
            
        }
        
        System.out.println();
        System.out.println();
        System.out.println("You were able to guess the number in "+count+" tries.");
        System.out.println();
        System.out.println();
        
        
    }
    System.out.println("Would you like to play again? (y/n)");
again = scan.nextLine();
}

}
}
            
            
                