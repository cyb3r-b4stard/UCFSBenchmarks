import java.util.Scanner;
import java.util.ArrayList;
import java.util.Collections;
import java.util.FileReader;
import java.util.IOException;

/**
 * ##### # ########### ## ##### #########_############# ####.
 *
 * @###### ### ####
 * @####### (##.#)
 */
public class PracLab33_CountingNames {

    public static void main(String[] args) {
        FileReader fr = new FileReader("names.txt"); 
        Scanner inputFile = new Scanner(fr);
        ArrayList<String> names = new ArrayList<String>();
         
        while(inputFile.hasNext()){
            names.add(inputFile.next();
        }
        
        Scanner kb = new Scanner(System.in);
        String inputName;
        ArrayList<String> names2 = new ArrayList<String>();
        System.out.println("Enter names for query then # to run query: ");
        inputName = kb.next();
        while(!(inputName.equals("#"))){
            names2.add(inputName);
            inputName = kb.next();
        }
        
        for(int i = 0; i < names2.size(); i++){
        int b = 0;
        String thisName = names2.get(i);
        
        for(int a = 0; a < names.size(); a++){
            if( (names.get(a)).equals(thisName) ){
                b++
            }
         
        } 
        
        System.out.println(thisName + ": " + b);    

       } 
