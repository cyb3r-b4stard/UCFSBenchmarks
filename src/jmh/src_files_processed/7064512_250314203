 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Zombie
{
    private String tipo; 
    private char sexo ;
    private int desplazamiento, nivelHambre, nivelVida, cantidadVictimas;    
    private boolean estado;
    public Zombie (){
        tipo = "";
        sexo = 'H';
        desplazamiento = 0;
        nivelHambre = 0;
        nivelVida = 0;
        cantidadVictimas = 0;

    }

    public Zombie (String tipo, char sexo, int desplazamiento, int nivelHambre, int nivelVida, int cantidadVida, boolean estado) {
        this.tipo = tipo;
        this.sexo = sexo;
        this.desplazamiento = desplazamiento;
        this.nivelHambre = nivelHambre;
        this.nivelVida = nivelVida;
        this.cantidadVictimas = cantidadVictimas;
        this.estado =  estado;

    }

    public String getTipo (){
        return tipo;

    }

    public char getSexo (){
        return sexo;

    }

    public int getDesplazamiento (){
        return desplazamiento;

    }

    public int getNivelHambre (){
        return nivelHambre;

    }

    public int getNivelVida (){
        return nivelVida;

    }

    public int getCantidadVictima (){
        return cantidadVictimas;

    }

    public boolean getEstado (){
        return estado;

    }


    public void setTipo (String tipo){
        this.tipo;
    }

    public void setSexo (char sexo){
        this.sexo
    }

    public void setDesplazamiento (int Desplazamiento ){
        this.Desplazamiento 
    }

    public void setNivelHambre (int NivelHambre){
        this.NivelHambre
    }

    public void setNivelVida (int nivelVida){
        this.NivelVida
    }

    public void setCantidadVictima (int CantidadVictima){
        this.CantidadVictima
    }

    public void setEstado (boolean estado){
        this.estado
    }
    
    
    public void printZombie (){
    System.out.println "Tipo de zombie es: " + tipo +;
    System.out.println "El sexo es: " +sexo+;
    System.out.println "El desplazamiento es: " + desplazamiento +; 
    System.out.println "El nivel de hambre es: " + nivelHambre +;
    System.out.println "El nivel de vida es: " + nivelVida +;
    System.out.println "La cantidad de victimas es: " + cantidadVictimas +;
    System.out.println "El estado es: "+ estado +;
    }

    
    public int diminucionVida (double porcentaje){
    nivelVida (int) = (nivelVida-nivelVida*porcentaje)
    return nivelVida







}