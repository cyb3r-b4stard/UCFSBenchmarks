
public class Datum {
    private int aDen;
    private int aMesiac;
    private int aRok;
    
    public Datum(int pDen, int pMesiac, int pRok) {
        this.aDen = pDen;
        this.aMesiac = pMesiac;
        this.aRok = pRok;
    }
    
    public void nastavDen(int pDen){
        this.aDen = pDen;
    }
    public void nastavMesiac(int pMesiac){
        this.aMesiac = pMesiac;
    }
    public void nastavRok(int pRok){
        this.aRok = pRok;
    }
    
    public int dajDen(){
        return this.aDen;
    }
    public int dajMesiac(){
        return this.aMesiac;
    }
    public int dajRok(){
        return this.aRok;
    }
    
    public void vypisDatum(){
        System.out.println("Datum: " + this.aDen +""+ this.aMesiac +""+ this.aRok);
    }
    
    public boolean jePriestupny(){
        if ( (this.aRok % 4 == 0) && (this.aRok % 100 == 0) || (this.aRok % 400 == 0)){
            return true;
        }
        else{
            return false;
        }
    }
    
    public void pocetDni(int m, int r){
        
        
        if ( (0 < m) && (m <= 12) ){
            System.out.println(this.aMesiac);
            switch(m){    
                case 4: case 6: case 9: 
                case 11:System.out.println(31);
                break;
                case 2: if(jePriestupny(int r)) System.out.println(29);
                
            }
        }
        else{
            System.out.println("Zadany nespravny udaj");
        }
        
    
    
    }
}