
import sum.kern.*;
/**
 * @###### 
 * @####### 
 */
public class Malen
{
    Bildschirm derBildschirm;
    Stift meinStift;
    Maus Maus;

    public Malen()
    {
        derBildschirm = new Bildschirm();
        meinStift = new Stift();
        Maus = new Maus();
    }

    public void fuehreAus()
    {
        

        int q = 1;
        
        
        
        
        
        
        
        
        Maus.istGedrueckt();
        
        
        
        
        while (x)
        {
        
        
        
        
        int x;
           
        int y;
        
        x = Maus.hPosition();
        
        y = Maus.vPosition();
        
        meinStift.runter();
        
        meinStift.bewegeBis(x,y);
        
        
        
        
    }
        
    
    
    
    
    
        
        
        
}
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
      
	    
        meinStift.gibFrei();
        derBildschirm.gibFrei();
    }
}