 */
public class ConvertTemp
{
   

    /**
     * Constructor for objects of class ConvertTemp
     */
    public ConvertTemp(float originalTemperature,String temperatureUnit)
    {
     if(temperatureUint == "celsius")
    {   
        if(originalTemperature<-273)
        {
         System.out.println("The temperature is too low");
        }
        else
        {
        double  newTemperature;
        newTemperature = originalTemperature * 1.8 + 32 ;
        System.out.println("The converted temperature is " + newTemperature+"°F.");
        } 
    }
        else
    {
         System.out.println("you enter is °F");
    } 
    
    
}

    
  