    public void Knight( Graphics piece, int x, int y )
    {
        Color brown = new Color (139, 119, 101);
        Color green = new Color (143, 188, 143);	
        
        piece.setColor(Color.white);
        int xTrap1white[] = {500, 520, 550, 570};
        int yTrap1white[] = {190, 90, 90, 190};
        int pointsTrap1white = 4;
        piece.fillPolygon(xTrap1white, yTrap1white, pointsTrap1white);
        piece.setColor(brown);
        int xTrap1brown[] = {500+x, 520+x, 550-x, 570-x};
        int yTrap1brown[] = {190-y, 90+y, 90+y, 190-y};
        int pointsTrap1brown = 4;
        piece.fillPolygon(xTrap1brown, yTrap1brown, pointsTrap1brown);
        
        
        piece.setColor(Color.white);
        piece.fillRect(497, 186, 75, 25);
        piece.setColor(brown);
        piece.fillRect(497+x,186+y, 65, 15);
        
        piece.setColor(Color.white);
        int xHex1white[] = {492, 503, 565, 578, 567, 503};
        int yHex1white[] = {183, 170, 170, 183, 195, 195};
        int pointsHex1white = 6;
        piece.fillPolygon(xHex1white, yHex1white, pointsHex1white);
        piece.setColor(brown);
        int xHex1brown[] = {492+x, 503, 565, 578-x, 567, 503};
        int yHex1brown[] = {183, 169+y, 169+y, 183, 196-y, 196-y};
        int pointsHex1brown = 6;
        piece.fillPolygon(xHex1brown, yHex1brown, pointsHex1brown);
        
        piece.setColor(Color.white);
