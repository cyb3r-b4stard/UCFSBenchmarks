        piece.setColor(Color.white);
        piece.fillRoundRect(555, 60, 15, 75, 5, 5);
        piece.setColor(brown);
        piece.fillRoundRect(555+x, 60+y, 5, 65, 5, 5);
    }
    
    public void Queen( Graphics piece, int x, int y )
