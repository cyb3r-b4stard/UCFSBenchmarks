import javax.swing.*;
import java.awt.*;
import java.util.*;

public class HW3_Graphics_Chess extends JPanel
{

    public static void main()
    {
        JFrame ourFrame = new JFrame();
        ourFrame.setDefaultCloseOperation( JFrame.EXIT_ON_CLOSE );
        ourFrame.setSize( 1000 , 1000 );
        ourFrame.setBackground( Color.black);

        HW3_Graphics_Chess ourHW3_Graphics_Chess = new HW3_Graphics_Chess();
        ourFrame.add( ourHW3_Graphics_Chess );
        ourFrame.setVisible( true );
    }

    public void paint( Graphics canvas )
    {
        this.Pawn(canvas, 5, 5);
        this.Rook(canvas, 5, 5);
        this.Bishop(canvas, 5, 5);
        this.Knight(canvas, 5, 5);
        this.Queen(canvas, 5, 5);
        this.King(canvas, 5, 5);
    }

    public void Pawn( Graphics piece, int x, int y)
    {
        Color brown = new Color (139, 119, 101);
        Color green = new Color (143, 188, 143);	
        
        piece.setColor(Color.white);
        int xTrap1white[] = {50, 70, 100, 120};
        int yTrap1white[] = {190, 90, 90, 190};
        int pointsTrap1white = 4;
        piece.fillPolygon(xTrap1white, yTrap1white, pointsTrap1white);
        piece.setColor(brown);
        int xTrap1brown[] = {52+x, 71+x, 98-x, 118-x};
        int yTrap1brown[] = {190-y, 90-y, 90-y, 190-y};
        int pointsTrap1brown = 4;
        piece.fillPolygon(xTrap1brown, yTrap1brown, pointsTrap1brown);
        
        piece.setColor(Color.white);
        piece.fillOval (50, 55, 70, 70);
        piece.setColor(brown);
        piece.fillOval (50+x, 55+y, 60, 60);
        
        piece.setColor(Color.white);
        piece.fillRect(47, 186, 75, 25);
        piece.setColor(brown);
        piece.fillRect(47+5, 189, 66, 17);
        
        piece.setColor(Color.white);
        int xHex1white[] = {42, 53, 115, 128, 117, 53};
        int yHex1white[] = {183, 170, 170, 183, 195, 195};
        int pointsHex1white = 6;
        piece.fillPolygon(xHex1white, yHex1white, pointsHex1white);
        piece.setColor(brown);
        int xHex1brown[] = {41+x, 55, 114, 128-x, 115, 55};
        int yHex1brown[] = {183, 169+y, 169+y, 183, 196-y, 196-y};
        int pointsHex1brown = 6;
        piece.fillPolygon(xHex1brown, yHex1brown, pointsHex1brown);
        
        
        piece.setColor(Color.white);
        int xTrap2white[] = {50, 70, 100, 120};
        int yTrap2white[] = {590, 490, 490, 590};
        int pointsTrap2white = 4;
        piece.fillPolygon(xTrap2white, yTrap2white, pointsTrap2white);
        piece.setColor(green);
        int xTrap2green[] = {52+x, 71+x, 98-x, 118-x};
        int yTrap2green[] = {590-y, 490-y, 490-y, 590-y};
        int pointsTrap2green = 4;
        piece.fillPolygon(xTrap2green, yTrap2green, pointsTrap2green);
        
        piece.setColor(Color.white);
        piece.fillOval (50, 455, 70, 70);
        piece.setColor(green);
        piece.fillOval (50+x, 455+y, 60, 60);
        
        piece.setColor(Color.white);
        piece.fillRect(47, 586, 75, 25);
        piece.setColor(green);
        piece.fillRect(47+5, 589, 66, 17);
        
        piece.setColor(Color.white);
        int xHex2white[] = {42, 53, 115, 128, 117, 53};
        int yHex2white[] = {583, 570, 570, 583, 595, 595};
        int pointsHex2white = 6;
        piece.fillPolygon(xHex2white, yHex2white, pointsHex2white);
        piece.setColor(green);
        int xHex2green[] = {41+x, 55, 114, 128-x, 115, 55};
        int yHex2green[] = {583, 569+y, 569+y, 583, 596-y, 596-y};
        int pointsHex2green = 6;
        piece.fillPolygon(xHex2green, yHex2green, pointsHex2green);

    }
    
