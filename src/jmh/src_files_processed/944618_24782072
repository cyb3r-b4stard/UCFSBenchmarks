import java.util.*;

public class Flight
{
   private String flightNumber;
   private String depature;
   private String destination;
   private int totalLoadCapacity;
   private ArrayList<Luggage> luggage;
   
    public Flight(String fn, String dep, String des, int i)
    {
        flightNumber = fn;
        depature = dep;
        destination = des;
        totalLoadCapacity = i;
        luggage = new ArrayList<Luggage>();
    }
    
    public String toString()
    {
        return "Flightnumber is " + flightNumber + " Flying from " + depature + " to " + destination + " total load capacity is " + totalLoadCapacity + "kg";
    }
    
    public void addLuggage(Luggage l)
    {
        luggage.add(l);
    }
    
    public void removeLuggage(Luggage l)
    {
        luggage.remove(1);
    }
    
    public int avaibleLoadCapacity()     
    {         
        luggage.size();
        return "Avaliable load capacity " + (int (totalLoadCapacity - luggage.size()));
    }
}