public class GraphExperiment
{
    

    /**
     * Constructor for objects of class GraphExperiment
     */
    public GraphExperiment()
    {
    }

    /**
     * test the complexity of the find shortest path in the graph
     * @param a the number of the nodes
     * @return the time use of the prossess
     */
    public void complexityTest(int a){
        UnDirectedGraph test = new UnDirectedGraph();
        int b=a*a/4;
        for (int i=0; i<a;i++){
            String s =Integer.toString(i);
        test.AddCity(s,1);
    }
        
        for (int i=0; i<b;i++){
            Random random = new Random();
            int k1 = random.nextInt(a)+1;
            String sk1 =Integer.toString(k1);
            int k2 = random.nextInt(a)+1;
            String sk2 =Integer.toString(k2);
            test.AddEdge(sk1,sk2,random.nextInt(a)+1);
        }
        test.setUnknown();
        test.addSource("2");
        test.addSource("3");
        test.findShortestPath(20,"meat");
         
    }
    
