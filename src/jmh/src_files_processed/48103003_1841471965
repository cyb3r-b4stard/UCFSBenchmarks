
import java.util.*;
public class WI
{

    public static void main(String[] args)
    {
        Scanner console = new Scanner(System.in);
        int x = 0;
        while(x ==0)
        {
            double price = 0;
            System.out.print("Enter model >>> ");
            int model = console.nextInt();
            System.out.print("Enter quantity >>> ");
            int q = console.nextInt();
            
            switch (model)
            {
                case 1:  price = (10.98 * q);
                case 2: price += price + (14.5 * q);
                case 3: price += price + (19.98 * q);
                case 4: price += price + (24.49 * q);
                case 5: price += price + (26.87 * q);
                
                case -1: break;
                case default : break;
                x = 1;
                break;
            }
            System.out.println(price);

        }
    }
}