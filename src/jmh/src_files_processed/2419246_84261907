import java.awt.Graphics;
import java.awt.Color;
class Rectangle implements Shape
{
    protected int x0;
    protected int y0;
    protected int L;
    protected int l;

    public Rectangle(int x0,int y0,int longueur, int largeur){
        this.x0=x0;
        this.y0=y0;
        this.L=longueur;
        this.l=largeur;
    }

    /*
     * @pre  {@code g} est initialise
     * @post dessine cette figure sur {@code g}. 
     */
    public void draw(Graphics g) {
        Segment seg1 = new Segment(0,0,L,0);
        g.setColor(Color.RED);
        seg1.draw(g);

        Segment seg2 = new Segment(L,0,L,l);
        g.setColor(Color.BLUE);
        seg2.draw(g);

        Segment seg3 = new Segment(0,l,L,0);
        g.setColor(Color.RED);
        seg1.draw(g);

        Segment seg4 = new Segment(0,0,0,l);
        g.setColor(Color.RED);
        seg1.draw(g);
    }        

    /*
     * @pre_
     * @post_retourne x et y min dans un tableau de int, x en 0 et y en 0
     */
    public int[]minXY(){
        int[]minxy={x0,y0};
        return minxy;
    }

    /*
     * @pre_
     * @post_retourne x et y max dans un tableau de int, x en 0 et y en 0
     */
    public int[]maxXY(){
        int[]maxxy={L,l};
        return maxxy;
    }

        in
        int]b=shape.maxXY();
        DrawPanel panel = new DrawPanel(shape,a[0],b[0],a[1],b[1]);
    }
}
