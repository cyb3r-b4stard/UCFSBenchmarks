
import java.util.Scanner;
public class Program23
{
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        double wt, newWt;
        String planet;
        
        System.out.print("Enter your weight on Earth: ");
        wt = sc.nextInt();
        
        System.out.print("Menu: Mercury, Venus, Mars, Jupiter, Saturn, Uranus, Neptune\nChoose a planet from the menu above: ");
        planet = sc.next();

        switch(planet){
            case "Mercury":newWt=wt*.37
            break;
            case "Venus":newWt=wt*.88
            break;
            case "Mars":newWt=wt*.38
            break;
            case "Jupiter":newWt=wt*2.64
            break;
            case "Saturn":newWt=wt*1.15
            break;
            case "Uranus":newWt=wt*1.15
            break;
            case: "Neptune":newWt=wt*1.12
            break;
        }
        System.out.println("Your weight on that planet is: "+newWt);
    }
}