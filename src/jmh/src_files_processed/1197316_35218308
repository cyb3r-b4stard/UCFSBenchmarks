import java.util.Scanner;
public class OddEven
{
    public static void main(String[]args)
    {
    int number;
    int zero = 0, odd = 0, even = 0;
    Scanner scan = new Scanner (System.in);
    System.out.println ("Enter a positive integer: ");
    number = scan.nextInt();
    while (number>0)
    {number/10;
    if (number % 1 ) 
     odd++;
     else
     even ++;
    }
}
    