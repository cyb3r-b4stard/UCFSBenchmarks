import sacco.*;
public class Square extends SaccoObject
{
    private int X;
    private int Y;
    private int sideLength;
    private String color;
    
    public void paintWindow(PaintBrush brush)
    {
        brush.fillRectangle(int x, int y, int width, int height);
    }
    
    public Square()
    {
        X = 0;
        Y = 0;
        sideLength = 100;
        color = "green";
    }
    
    public Square(int tmpX, int tmpY, int tmpSideLength)
    {
        X = tmpX;
        Y = tmpY;
        sideLength = tmpSideLength;
        color = "blue";
    }
    
    public void setX(int tmpX)
    {
        X = tmpX; 
    }
    
    public void setY(int tmpY)
    {
        Y = tmpY;
    }
    
    public void setSideLength(int tmpSideLength)
    {
        sideLength = tmpSideLength;
    }
    
    public void setColor(String strColor)
    {
        color = strColor;
    }
    
    public int getArea()
    {
       return sideLength*sideLength;
    }
    
    public int getPerimeter()
    {
        return sideLength*4;
    }
    
    public void doubleSide()
    {
        sideLength = sideLength*2;
    }
    
    public String toString()
    {
        String str = "This " + color + " square is located at ("+X+","+Y+") and a side length of " + sideLength +". Its perimeter is " + this.getPerimeter() + " and its area is " + this.getArea();
        return str;
    }
}
