import java.io.*;
class smallest
{
    void meth() throws IOExcption
    {
        InputStreamReader n=new InputStreamReader(System.in);
        BufferedReader br=new BufferedReader (n);
        System.out.println("Enter value of n1");
        int n1=Integer.parseInt(br.readLine());
        System.out.println("Enter value of n2");
        int n2=Integer.parseInt(br.readLine());
        System.out.println("Enter value of n3");
        int n3=Integer.parseInt(br.readLine());
        if(n1>n2>n3)
        {
      System.out.println(+n1+"is the smallest num");
        else if (n2>n3>n1)
        {
          System.out.println(+n2+"is the smallest num");
        }
        else
        {
            System.out.println(+n3+"is the smallest num");
        }
    }
}
        
    