public class ScintillationGrid {

    public static void main(String[] args) {
        DrawingPanel panel= new DrawingPanel (900,650);
        Graphics g= panel.getGraphics();
        panel.setBackground(Color.CYAN);
        
        drawOptical(g,0,0,300,3,6);
        drawOptical(g,50,400,200,1,20);
        drawOptical(g,400,50,420,6,10);
        drawOptical(g,500,500,100,7,4);
      
    }
    public static void drawOptical( Graphics g, int x, int y, int size, int numlines, int thicklines){
        for (int i=1; i< numvlines; i++) {
        g.setColor(Color.BLACK);
        g.fillRect(x, y, size, size);
        g.drawRect( i*75, i*0, numlines, thicklines);
    }
 
   
  
