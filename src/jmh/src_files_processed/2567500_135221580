import java.util.*;
import java.io.*;
public class Main_1{
    public static void main(String agrs[]) throws IOException{
        Scanner k=new Scanner(System.in);
        boolean charact=false;
        FileReader flr=new FileReader("E:\\GameTxTs\\{Phill}.txt");
        BufferedReader bflr=new BufferedReader(flr);
        System.out.println("Welcome to Dungeon battler(name subject to change)\nimport\\start fresh");
        String userinput=k.nextLine();
        userinput=userinput.toLowerCase();
        switch(userinput){
            case"import":
                charact=true;
                break;
            case"start":
            }
        String nam;
        String hea="100";
        String lif="3";
        String liv="true";
        C_C player=new C_C();
        if(charact==false){
            System.out.println("Name= ");
            nam=k.nextLine();
            player.import1(nam,hea,lif,liv);
            System.out.println(player.info());
        }else{
            int maxindx=-1;
            nam= bflr.readLine();
            maxindx=0;
            hea= bflr.readLine();
            maxindx=1;
            lif= bflr.readLine();
            maxindx=2;
            liv= bflr.readLine();
            player.import1(nam,hea,lif,liv);
            System.out.println(player.info());
        }
        bflr.close();
        flr.close();
        Commands cc=new Commands(C_C) player);
        while(player.life>=0){
            userinput=k.nextLine();
            cc.does(userinput);
        }
    }
}