class worker
{
    String name;
    double basic;
    worker(String nm,double bas)
    
    {
        name=nm;basic=bs;
    }
    void display()
    {
        System.out.println("Name="+name);
        System.out.println("basic="+basic);
    }}
    public class wages extends worker
    {
        int hrs;
        double rate;
        double wage;
        wages(String nm,double nm,int hr,double rt)
        {super(nm,bs)
            hrs=hr;
            rate=rt;
        }
        double overtime()
        {
            return hrs*rate;
        }
        void display(0
        {
            super.display();
            wage=overtime()+basic;
            System.out.println("Hours worked="+hrs);
            System.out.println("Rate="+rate);
            System.out.println("wage="+wage);
        }}
