import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
public class Problem4 extends JFrame
{
    private JTextField inputLine;
    private static final int BUTTON_WIDTH=80;
    private static final int BUTTON_HEIGHT=30;
    
    public static void main(String[]args)
    {
        Problem4 frame=new Problem4();
        frame.setVisible(true);
    }
    
    public Problem4()
    {
        JPanel buttonPanel;
        JButton [] ={oneBtn, twoBtn, threeBtn, fourBtn, fiveBtn, sixBtn, sevenBtn, eightBtn, nineBtn, zeroBtn,
                clearBtn, ceBtn, equalsBtn, decBtn, multBtn, divBtn, subBtn, addBtn};
        
        Container contentPane;
        
        setSize(250,400);
        setTitle("Calculator");
        setLocation(150,250);
        
        contentPane=getContentPane();
        contentPane.setLayout(new BorderLayout());
        
        inputLine=new JTextField(20);
        
        buttonPanel=new JPanel();
        buttonPanel.setLayout(new GridLayout(5,4));
        
        sevenBtn=new JButton("7");
        sevenBtn.setSize(BUTTON_WIDTH,BUTTON_HEIGHT);
        eightBtn=new JButton("8");
        
        nineBtn=new JButton("9");
        
        multBtn=new JButton("x");
        
        fourBtn=new JButton("4");
        
        fiveBtn=new JButton("5");
        
        sixBtn=new JButton("6");
        
        divBtn=new JButton("/");
        
        oneBtn=new JButton("1");
        
        twoBtn=new JButton("2");
        
        threeBtn=new JButton("3");
        
        subBtn=new JButton("-");
        
        zeroBtn=new JButton("0");
        
        decBtn=new JButton(".");
        
        addBtn=new JButton("+");
        
        clearBtn=new JButton("c");
        
        ceBtn=new JButton("ce");
        
        equalsBtn=new JButton("=");
        
        buttonPanel.add(sevenBtn);
        buttonPanel.add(eightBtn);
        buttonPanel.add(nineBtn);
        buttonPanel.add(multBtn);
        buttonPanel.add(fourBtn);
        buttonPanel.add(fiveBtn);
        buttonPanel.add(sixBtn);
        buttonPanel.add(divBtn);
        buttonPanel.add(oneBtn);
        buttonPanel.add(twoBtn);
        buttonPanel.add(threeBtn);
        buttonPanel.add(subBtn);
        buttonPanel.add(zeroBtn);
        buttonPanel.add(decBtn);
        buttonPanel.add(addBtn);
        buttonPanel.add(clearBtn);
        buttonPanel.add(ceBtn);
        buttonPanel.add(equalsBtn);
        
        contentPane.add(inputLine, BorderLayout.NORTH);
        contentPane.add(buttonPanel, BorderLayout.CENTER);
    }
    
}