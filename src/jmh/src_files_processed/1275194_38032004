
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Kunde
{

    String name;
    static double kundennummerNext;
    double kundennummer;
    char geschlecht;
    double groesse;
    int alter;
    String adresse;
    double vermoegen;
   
    Kunde()
    {
      geschlecht='m';
      kundennummerNext++;
      kundennummer=kundennummerNext;
    }
    
    void setName(String pName)
    {
        name=pName;
    }
    
    String getName()
    {
        return name;
    }
    
    void setGeschlecht(char pGeschlecht)
    {
        geschlecht=pGeschlecht;
    }
    
    char getGeschlecht()
    {
        return geschlecht;
    }
    
    String anredeBriefkopf()
    {
        if(char Kunde.geschlecht='m' || Kunde.geschlecht='w')
        {
            if(pGeschlecht='m')
            {
                return "Sehr geehrter Herr,";
            }
            else
            {
            return "Sehr geehrte Frau,";
            }        
        }
        else
        {
            return "Sehr geehrte Damen und Herren,";
        }
    }
}