

import java.awt.*;
import java.applet.*;


public class Lab07Bst extends Applet
{
  public void paint(Graphics g)
{
        StarrySky.drawSky(g);
        StarryGrass.drawGrass(g);
        StarryStars.drawStars(g);

        






 }
}
 
     class StarrySky
  {
public static void drawSky(Graphics g)
  {
    Expo.setColor(g,Expo.darkBlue);
    Expo.fillRectangle(g,0,0,1000,650);
} 
}
class StarryGrass
{
public static void drawGrass(Graphics g)
 {
     Expo.setColor(g,Expo.darkGreen);
     Expo.fillRectangle(g,0,325,1000,650);
 }
}
class StarryStars
{ 
    public static void drawStars
 
(int centerx = Expo.random(0,1000))
(int centery = Expo.random(0,325))
int cadius = Expo.random(0,50);
int sides = Expo.random(0,8);


for (int s = 1; s <= 100; s++)
 Expo.setColor(g,Expo.white);
Expo.drawStar(g, Centerx, Centery, Radius, Sides);



}    
   

    
    
    









