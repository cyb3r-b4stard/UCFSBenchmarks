class Bruch {
    int zaehler;
    int nenner;
   

    Bruch(int startZaehler,int startNenner) {
        zaehler = startZaehler;
        nenner = startNenner; 
    }

    void setzeZaehler(int neuZaehler) {
        zaehler = neuZaehler;
    }

    int gibZaehler () {
        return zaehler;
    }

    void setzeNenner(int neuNenner) {
        nenner = neuNenner;
    }

    int gibNenner () {
        return nenner;
    }

    void erweiternMit(int e) {
       nenner = nenner*e;
       zaehler = zaehler*e;
    }
    
    double dezimalwertBerechnen () {
        return nenner/zaehler= e;
    }

    
}