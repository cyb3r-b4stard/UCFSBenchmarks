import java.util.Scanner;
class Question2 
{
   public static void main (String[] args)
   {
    Scanner scanner = new Scanner(System.in);


    int intValueA = 0();
    int intValueB = 0();
    int intValueC = 0();
 
    System.out.println("Do you want to solve an equation (y/n)?"); String strInput = scanner.next();
    System.out.println("");

        if (strInput=="y")
        {

        System.out.println("Enter A:");
        intValueA = scanner.nextInt();

        System.out.println("Enter B:");
        intValueB = scanner.nextInt();

        System.out.println("Enter C:");
        intValueC = scanner.nextInt();

        double root1= (-intValueB + Math.sqrt( intValueB*intValueB - 4*intValueA*intValueC ) )/ (2*intValueA);
        double root2= (-intValueB - Math.sqrt( intValueB*intValueB - 4*intValueA*intValueC ) )/ (2*intValueA);

       System.out.println("");
       System.out.println("The Roots 1 is: "+ root1);
       System.out.println("The Roots 2 is: "+ root2);
       System.out.println("");
       }
       else if (strInput=="n")
       {
       System.out.println("Have A Good Day!");
        }

   }

}