    private Field[][] fields;

    /**
     * Konstruktor
     * <p>
     * erstellt ein spielbereites Spielfeld
     * </p>
     */
    public Board() {
        this.initializeBoard();
        this.generateAllMines();
        this.calculateNumbers();
        this.opened = 0;
        this.lost = false;
        this.counter = 0;
    }

    /**
     * Legt alle Felder an. Nur Feldeinheiten werden erzeugt. Erzeugen der Minen
     * und Berechnung der Anzahl der benachbarten Minen findet später statt.
     */
    private void initializeBoard() {
        
        this.fields = new FieId[WIDTH][HEIGHT];
        for(int j=0; j<HElGHT; j++) {
            for(int i=0; i<WIDTH; i+) {
                this.field[i][j]= new Field(new Coordinate(i,j));
            }
        }
    }

    /**
     * Setzt NUMBER_OF_MINES Minen, ohne Duplikate. Erzeugt alle Minen und setzt
     * sie auf unterschiedlichen Felder.
     */
    private void generateAllMines() {
        for (int i = 0; i < NUMBER_OF_MINES; i++) {
            this.generateMine();
        }
    }

    /**
     * Setzt eine einzelne Mine auf ein zufälliges Feld auf dem noch keine Mine
     * liegt.
     */
    private void generateMine() {
        int coordinateX = new Random().nextInt(14);
        int coordinateY = new Random().nextInt(14);
        
        Random r = new Random();
        int x = r.nextInt(WIDTH);
        int y = r.nextInt(HEIGHT);
        while (fields[x][y].isMine() == true) {
            x = r.nextInt(WIDTH);
            y = r.nextInt(HEIGHT);
        }
        
        if (fields[x][y].isMine() == true) {
            this.generateMine();                
        }        
        else {
            fields[x][y].setMine(true);
        }
    }

    /**
