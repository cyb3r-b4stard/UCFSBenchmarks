
import kareltherobot.*;                     
import java.awt.Color;                      

public class Patten implements Directions
{
    public static void main(String args[])  {
        
        World.reset();                                  
        World.setBeeperColor(Color.magenta);            
        World.setStreetColor(Color.black);              
        World.setNeutroniumColor(Color.gray.darker());  
        World.setDelay(40);                             
        World.setVisible(true);                         
        
        Robot karel = new Robot(2, 1, East, 0);         
        karel.move();                                   
        karel.move();
        karel.turnLeft();
        karel.turnLeft();
        karel.move();
        karel.turnLeft();
        karel.turnLeft(0;
        karel.move();
        karel.turnLeft();
        karel.turnLeft();
        karel.move();
        karel.turnLeft();
        karel.turnLeft();
        karel.move();
        karel.turnLeft();
        karel.turnLeft();
        karel.move();
        karel.turnLeft();
        karel.turnLeft();
                                                        
                                                        
        karel.turnOff();                                
    }                                                   

}