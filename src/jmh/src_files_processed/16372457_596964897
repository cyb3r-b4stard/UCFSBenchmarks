
public class Fak
{
   int f;
   int n;

    public Fak()
    {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       
        
   
    }
    
    public void Fak ()
    {
        f=1;
        n=Einagbe.readInt("Zahlen:")
        
        if (n>0)
        {
        for (int i=1;1<=n;i++)
        {
            System.out.println("Anzahl:");
            f=f*i;
            
        }
        
    }
        
    else if (n==0)
     System.out.println("Ist = 0");
     
    else
    System.out.println("Keine Augabe");
        
    }
}
