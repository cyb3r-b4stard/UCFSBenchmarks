import java.util.Scanner;

public class NumericTypes
{
    public static void main (String [] args)
    {
        Scanner keyboard = new Scanner(System.in);
    
        final int NUMBER = 2 ;     
        float SCORE1 = 100;        
        float SCORE2 = 95;     
        float fToC = 5/9 * (SCORE1 + SCORE2 / NUMBER - 32);
        float average = (SCORE1 + SCORE2) / NUMBER;     
        String output;                  
        String firstName;
        String lastName;
        String fullName;
        String nextFloat;   
        String V;
        double r;   
        float volume = (V = 4/3 * Math.PI * Math.pow(r)(3.0));
        float radius;

        
        output = SCORE1 + " and " + SCORE2 + " have an average of "
                + average;
        System.out.println(output);

         
        output = average + " in Fahrenheit is " + fToC
                 + " in Celsius.";
        System.out.println(output);
        System.out.println();       

        System.out.println("What is your first name?");
        firstName = keyboard.nextLine();
        System.out.println();       
        System.out.println("What is your last name?");
        lastName = keyboard.nextLine();
        fullName = (firstName + (" ") + lastName);
        System.out.println();       
        System.out.println(fullName);
        System.out.println();       
        
        
        char letter;
        letter = fullName.charAt(0);
        System.out.println(letter);
        System.out.println(); 
        
        String upper = fullName.toUpperCase();
        System.out.println(upper);
        System.out.println(); 
        
        int stringSize;
        String name = fullName;
        stringSize = fullName.length();
        System.out.println(stringSize);        
        System.out.println();       
        
        float diameter;
        System.out.println("Enter the diameter of a sphere:   ");
        diameter = keyboard.nextFloat();
        radius = 2 * diameter();
        
        System.out.println();       
    }   
}