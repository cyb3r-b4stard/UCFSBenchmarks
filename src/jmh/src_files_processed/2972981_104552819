public class Buch
{
    String buchtitel;
    int isbn;
    int erscheinungsjahr;
    String verlag;
    String zustand;
    Autor[] autoren = new Autor[10];
    
    

    public Buch (String buchtitel, int isbn){
        this.buchtitel = buchtitel;
        this.isbn = isbn;

    }

    public Buch (String buchtitel, int isbn, int erscheinungsjahr, String verlag, String zustand){
        this.buchtitel = buchtitel;
        this.isbn = isbn;
        this.erscheinungsjahr = erscheinungsjahr;
        this.verlag = verlag;
        this.zustand = zustand;
    }

    public void setBuchtitel (String buchtitel) {
        this.buchtitel = buchtitel;

    } 

    public void setAutor () {
        int i;
       for(i=0; i<=2; i++){
        Autor kerl = new Autor(String name, String vorname, int alter);
        autoren[i] = kerl;
        }

    } 

    public void setIsbn (int isbn) {
        this.isbn = isbn;

    } 

    public void setErscheinungsjahr (int erscheinungsjahr) {
        this.erscheinungsjahr = erscheinungsjahr;

    } 

    public void setVerlag (String verlag) {
        this.verlag = verlag;

    }

    public void zustand (String zustand) {
        this.zustand = zustand;

    }

    public void getBuchbeschreibung () {

        System.out.println (this.buchtitel);
        System.out.println (this.isbn);
        System.out.println (this.erscheinungsjahr);
        System.out.println (this.verlag);
        System.out.println (this.zustand);

    }   
}