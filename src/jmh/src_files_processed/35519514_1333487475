package person_template;
import java.util.ArrayList;
public class Person{
    private String my_name;
    private int my_age;
    private Person my_bestfriend;
    private int  age_difference;
    private String my_friends;
    public Person(){
            my_bestfriend = null;    
            my_name = null;
            my_age = 0;
            age_difference = 0;
}
    public Person(String name, int age){

            my_name = name;
            my_age = age; 
 }
    public void set_name(String name){ 

            my_name = name;
}
    public String add_friends(Person friend){ 
           int x=0 
        while(x<30){
            my_friends = friend.get_name();
            return my_friends
            x++;
        }
}

public void set_age(int age){

            my_age = age;
            
        }
    public void set_friend(Person friend){
            my_bestfriend = friend;
            int friend_age = my_bestfriend.get_age();
            String friend_name = my_bestfriend.get_name();
            if (my_bestfriend==this){

                System.out.println("You can't add yourself as a friend!");
                friend_name = null;
                friend_age = 0;
}
}
    public int age_difference(){


        if(my_bestfriend != null){
            int friend_age = my_bestfriend.get_age();
            age_difference = Math.abs(my_age - friend_age);

}
        else{

            age_difference = -1;
            System.out.println("error friend yet to be added");
}
        return age_difference;
}
    public String get_name(){

        return my_name;
}
    public int get_age(){

        return my_age;
}
    public void display_info(){

        System.out.println("Hi my name is " + my_name + " I am " + my_age + " years old");
        if(my_bestfriend != null){
            String friend_name = my_bestfriend.get_name();
            int friend_age = my_bestfriend.get_age();
            System.out.println("My friend's name is " + friend_name + " who is " + friend_age + " years old");

}
}
}