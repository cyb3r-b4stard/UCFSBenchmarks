 * ########:
 * ##:
 */

import ecs100.*;
import java.awt.Color;

/** # #### ###### ####### #### ###### ### # #### ## ### ######### #### */
public class NamePrinter {

    /**
     * Constructor: Set up the GUI and the buttons
     */
    public NamePrinter(){
        UI.initialise();                            
        UI.addButton("Print", this::doPrint ); 
        UI.addButton("Draw", this::doDraw );   
        UI.addButton("Quit", UI::quit );
    }

    /**
     * Ask for name and then print the name tag
     */ 
    public void doPrint(){
        String name = UI.askString("What is your name");
        this.printNameTag(name);
    }

    /**
     * Print a nametag with a name inside a box made of asterisks
     */
    public void printNameTag(String name) {
        UI.clearText();                 
        UI.println("*********************************");
        UI.println("*                               *");
        UI.println("*  HELLO, my name is            *");
        UI.println("*                               *");
        UI.println("*          " + name + "               *");
        UI.println("*                               *");
        UI.println("*********************************");
        UI.println();

    }

    /**
     * Ask for name and then draw the name tag
     */ 
    public void doDraw(){
        String name = UI.askString("What is your name");
        this.drawNameTag(name);
    }

    /**
     * Draw a nametag on the graphics pane
     *  The rectangular nametag is 300 units wide and 150 units high
     *  and the left edge is 100 units over and the top is 70 units down
     */
    public void drawNameTag(String name){
        UI.clearGraphics();                            
        UI.setFontSize(24);
        UI.Color(255,255,255);
        UI.drawOval(70, 50, 300, 300);
        UI.fillOval(70, 50, 300, 300);
        UI.drawString("Hello, my name is", 120, 125);  
        UI.drawString(name,  200, 170);                
    }


}