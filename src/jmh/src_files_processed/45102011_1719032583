public class RandomStringChooser
   {
       public String[] wordList = new String[4];
   public String toString()
      {
      String output = new String();
      
      for( String word : wordList )
         {
         output += word + ", ";    
         } 
         
      return output;
      } 
      
   public String getNext()
   {
       return wordList[Math.random() * 3]
    }
   } 
