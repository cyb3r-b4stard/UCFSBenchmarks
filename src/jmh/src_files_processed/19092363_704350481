public class Ground
{
    private Player player;
    private Jar jar1;
    private Jar jar2;
    private Jar jar3;
    
    public Ground()
    {
        player = new Player();
        jar1 = new Jar(1, new Stone());
        jar2 = new Jar(2, new Stone());
        jar3 = new Jar(3, new Stone());
    }
    
    Ground();
}