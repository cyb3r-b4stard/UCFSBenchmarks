public class GefäßRätsel
{
    int MaxGefäß3, MaxGefäß5, MaxGefäß8, AktGefäß3, AktGefäß5, AktGefäß8;
    
    public void Reset() {
        this.MaxGefäß8 = 8;
        this.MaxGefäß5 = 5;
        this.MaxGefäß3 = 3;
        this.AktGefäß8 = 8;
        this.AktGefäß5 = 0;
        this.AktGefäß3 = 0;
    }
    
    public void GießeVon8Zu3() {
        AktGefäß8 = AktGefäß8 - (MaxGefäß3 - AktGefäß3);
        AktGefäß3 = AktGefäß3 + (MaxGefäß3 - AktGefäß3);
        System.out.println("Gieße vom 8 Liter Gefäß in das 3 Liter Gefäß");
        System.out.println("Stand:  8L-Gefäß:  " + AktGefäß8 + " | 5L-Gefäß: " + AktGefäß5 + " | 3L-Gefäß: " + AktGefäß3);
        System.out.println();
    }
    
        public void GießeVon8Zu5() {
        AktGefäß8 = AktGefäß8 - (MaxGefäß5 - AktGefäß5);
        AktGefäß5 = AktGefäß5 + (MaxGefäß5 - AktGefäß5);
        System.out.println("Gieße vom 8 Liter Gefäß in das 5 Liter Gefäß");
        System.out.println("Stand:  8L-Gefäß:  " + AktGefäß8 + " | 5L-Gefäß: " + AktGefäß5 + " | 3L-Gefäß: " + AktGefäß3);
        System.out.println();
    }
    
        public void GießeVon5Zu3() {
        AktGefäß5 = AktGefäß5 - (MaxGefäß3 - AktGefäß3);
        AktGefäß3 = AktGefäß3 + (MaxGefäß3 - AktGefäß3);
        System.out.println("Gieße vom 5 Liter Gefäß in das 3 Liter Gefäß");
        System.out.println("Stand:  8L-Gefäß:  " + AktGefäß8 + " | 5L-Gefäß: " + AktGefäß5 + " | 3L-Gefäß: " + AktGefäß3);
        System.out.println();
    }
    
        public void GießeVon5Zu8() {
        AktGefäß5 = AktGefäß5 - (MaxGefäß8 - AktGefäß8);
        AktGefäß8 = AktGefäß8 + (MaxGefäß8 - AktGefäß8);
        System.out.println("Gieße vom 5 Liter Gefäß in das 8 Liter Gefäß");
        System.out.println("Stand:  8L-Gefäß:  " + AktGefäß8 + " | 5L-Gefäß: " + AktGefäß5 + " | 3L-Gefäß: " + AktGefäß3);
        System.out.println();
    }
    
        public void GießeVon3Zu8() {
        AktGefäß3 = AktGefäß3 - (MaxGefäß8 - AktGefäß8);
        AktGefäß8 = AktGefäß8 + (MaxGefäß8 - AktGefäß8);
        System.out.println("Gieße vom 3 Liter Gefäß in das 8 Liter Gefäß");
        System.out.println("Stand:  8L-Gefäß:  " + AktGefäß8 + " | 5L-Gefäß: " + AktGefäß5 + " | 3L-Gefäß: " + AktGefäß3);
        System.out.println();
    }
    
        public void GießeVon3Zu5() {
        AktGefäß3 = AktGefäß3 - (MaxGefäß5 - AktGefäß5);
        AktGefäß5 = MaxGefäß5 - (AktGefäß5 + (AktGefäß3 - (MaxGefäß5 - AktGefäß5);
        System.out.println("Gieße vom 3 Liter Gefäß in das 5 Liter Gefäß");
        System.out.println("Stand:  8L-Gefäß:  " + AktGefäß8 + " | 5L-Gefäß: " + AktGefäß5 + " | 3L-Gefäß: " + AktGefäß3);
        System.out.println();
    }
    
    public void Gelöst() {
        if(AktGefäß5 == AktGefäß8)
        if(AktGefäß5 == 4)
        System.out.println("Du hast das Rätsel gelöst!");
    }
}