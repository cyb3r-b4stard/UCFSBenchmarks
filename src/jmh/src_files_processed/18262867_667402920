import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
public class APanel extends JPanel
{ private ButtonGroup group = new ButtonGroup();
    private void build()
    { ButtonListener listener
        = new ButtonListener();
        add(button("Savings", listener));
        add(button("Cheque", listener)); }

    private JRadioButton button(String label, ButtonListener listener)
    { JRadioButton button =
            new JRadioButton(label);
        button.addActionListener(listener);
        group.add(button);
        return button; }

    private class Listener
    implements ActionListener

    { public void actionPerformed(ActionEvent e)
        {e.getActionCommand();
            if (e.getActionCommand().equals("Savings"))
                e.getSource()
            if (e.getSource() == savingsButton)}
        }
    }