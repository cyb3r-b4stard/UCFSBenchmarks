import java.util.Random;
public class Arrays
{
    public static void array()
    {
        int [] diasMes = {31,28,31,30,31,30,31,31,30,31,30,31};
        String [] nombreMes = {"Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre"};
        for (int i=0; i<diasMes.length; i++) {
            System.out.println (nombreMes[i] +" tiene " + diasMes[i] + " dias");
        }
    }

    public static int[] generarVectorAleatorio(int x)
    {
        Random rnd = new Random();
        int [] numeros = new int [x];
        for (int i=0;i<x;i++)
            numeros[i] = rnd.nextInt(99)+1;
        return numeros;
    }
    
      public static void numerosRepetidos()
    {
        int aux = 0;
        int [] numeros = {3,5,6,7,8,6};
        for (int i=0;i<numeros.length;i++)
        {
            if (numeros[i] = int numeros[i+1] )
            {
                aux++;
            }
        }
        
        System.out.println("El numero de elementos repetidos es : " + aux); 
    }
}
