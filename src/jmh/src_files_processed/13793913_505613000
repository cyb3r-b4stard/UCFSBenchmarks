import java.util.*;

public class Stars
{

    public void Main()
    {
        Scanner keyboard = new Scanner (System.in);

        System.out.println("Enter base width: ");
        int base = keyboard.nextInt();
        
        int space;

        for (int row = 1; row <= base; row++)
        {
            for(space == base)
            {
                System.out.print(" ");

                space++;
            }

            for(int star = 1; star <= row; star++)
            {
                System.out.print("*");
            }

            System.out.println();
        }

    }
}