import java.util.*;
public class Operation
{
     Scanner kb = new Scanner(System.in);
     Node head,tail;
     Operations()
     {
         head=tail=null;
         Node move = head;
        }
         public void add(String name,int id,double balance)
         {
             if(head==null)
             {
             head = tail = new Node(name,id,balance);
            }
            else
                tail.next = new Node(name,id,balance);
                tail = tail.next;
            }
    
    public void withraw(String name,int id,double balance)
    {
        int num;
        double depo;
        Node move = head;
        System.out.println("Input id #: ");
        num = kb.nextInt();
        
        for(;move!=null;move=move.next)
        {
            if(num==move.id)
            {
                System.out.println("Enter amount to withraw: ");
                depo = kb.nextDouble();
                move.balance = move.balance+depo;
            }
        

    }