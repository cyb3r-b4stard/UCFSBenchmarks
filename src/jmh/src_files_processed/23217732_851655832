import kareltherobot.*;

public class MazeWhileTest extends KJRTest implements Directions
{

    public MazeWhileTest(String name)
    {   super(name);
    }

    public void setUp()
    {   
        World.setVisible(true);

        World.setDelay(40);
    }

    public void test_playOne
    {
        {
        World.reset();
        World.readWorld("");
       
        MazeWalker walker1 = new MazeWalker(7, 2, North, 1);
        walker1.followWallRight();
        assertAt(walker1, 7, 2);
        assertFacingWest(walker1);
        assertRunning(walker1);
        
        MazeWalker walker2 = new MazeWalker(2, 2, North, 1);
        walker2.followWallRight();
        assertAt(walker2, 3, 2);
        assertFacingNorth(walker2);
        assertRunning(walker2);
        
        MazeWalker walker3 = new MazeWalker(7, 7, North, 1);
        walker3.followWallRight();
        assertAt(walker3, 8, 8);
        assertFacingEast(walker3);
        assertRunning(walker3);
        
        MazeWalker walker4 = new MazeWalker(2, 7, North, 1);
        walker4.followWallRight();
        assertAt(walker4, 2, 8);
        assertFacingSouth(walker4);
        assertRunning(walker4);
    }
    
     public void test2_solveMaze()
    {   
        World.reset();
        World.readWorld("");
       
        MazeWalker walker1 = new MazeWalker(1, 1, East, 1);
        walker1.solveMaze();
        assertAt(walker1, 7, 9);
        assertRunning(walker1);
        
       
        
        
    }
  

    public static void main(String[] args)
    {
        junit.textui.TestRunner.run(MazeWhileTest.class);
    }
}