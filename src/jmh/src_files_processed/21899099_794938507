import java.util.*;
import javax.swing.*;

public class Application
{
    public static void main(String[] args)
    {
        Scanner in=new Scanner(System.in);
        String n, p;
        int sN, i;
        double s;
        int maxSize=20;
        
        ArrayList StaffArrayList = new ArrayList (maxSize);
        Staff stff=new Staff();
        
        for (i=0;i<5;i++)
        {
            System.out.println("Please enter name :");
            n=in.next();
            System.out.println("Please enter staff no :");
            sN=in.nextInt();
            System.out.println("Please enter position :");
            p=in.nextLine();
            in.next();
            System.out.println("Please enter salary :");
            s=in.nextDouble();
            stff=new Staff(n,sN,p,s);
            StaffArrayList.add(i,stff);
        }
        
        Staff st;
        double less=1500;
        int count=0;
        for (i=0;i<5;i++)
        {
            st=(Staff)StaffArrayList.getData(i);
            if(st.getSalary()<less)
            {
                count++;
            }
        }
        
        System.out.println("Number of staff whose salary less than RM1500 is " +count);
        
        double max=0;
        Staff m=null;
        for(i=0;i<5;i++)
        {
            st=(Staff)StaffArrayList.getData(i);
            if(st.getSalary()>max)
            {
                max=st.getSalary();
                m=st;
            }
        }
        
        System.out.println("The maximum salary is RM" + max + m.toString());
    
            
            
        
     
}