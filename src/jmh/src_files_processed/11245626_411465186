public class Prog54c
(
    public static void main(String args[])
    (
    final PI = 3.14159 
    double radius = 3.712
    
    Area = PI*(radius*radius)
    Circumference = 2*PI*radius
    
    System.out.println("The Radius of the circle = " + radius)
    System.out.println("The Area of the circle = " + Area)
    )
)
