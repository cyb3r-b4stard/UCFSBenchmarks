
public class Rekenwonder
{

    public int twintigsteMachtVanTwee() {
        int i = 0;
        int resultaat = 1;
        while (i<20) {resultaat = resultaat * 2; i++;}
        return resultaat;
    }

    public int vijfdeMachtVanDrie() {
        int i= 0;
        int resultaat= 1;
        while (i<5){
            resultaat= resultaat*3; 
            i++;

        }
        return resultaat;
    }

    public int ndemachtvan(int n,int getal){
        int i= 0;
        int resultaat= 1;
        while(i<n){      
            resultaat = resultaat*getal;
            i++;

        }
        return resultaat;
    }

    public int telOp(int n) {
        int sum=0;
        int i=0;
        while (i<=n){
            if(i%2==0){ 
                sum=sum+i;
            }
            i++;
        }
        return sum;

    }

    public String herhaal(int n, String s) {
       
        s= java.lang.String s* int n;
       
      
        return s;

    }
}