import java.util.Random;

/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Dice
{
    private int diceRoll;
    private int diceUpperLimit;
    private int diceLowerLimit;

    /**
     * Constructor for objects of class Dice
     */
    public Dice()
    {
        diceRoll = 0;
        diceUpperLimit = 6;
        diceLowerLimit = 1;
    }

    public Dice(int newDiceUpperLimit, int newDiceLowerLimit)
    {
        diceRoll = 0;
        diceUpperLimit = newDiceUpperLimit;
        diceLowerLimit = newDiceLowerLimit;
    }
    
    public int rollDice()
    {
        int randomNumber;
        
        randomNumber = 1 + (int)(Math.random() * ((diceUpperLimit - diceLowerLimit) + 1));
        
        diceRoll = randomNumber;
        
        return diceRoll;
    }
    
    public int getRoll()
    {
        return diceRoll;
    }
    
    public void setDiceRoll(int newDiceRoll)
    {
        diceRoll = newDiceRoll;
    }
        
    public int getDiceUpperLimit()
    {
        return diceUpperLimit;
    }
    
    public int getDiceLowerLimit()
    {
        return diceLowerLimit;
    }
    
    public void setDiceUpperLimit(int newUpperLimit)
    {
        diceUpperLimit = newUpperLimit;
    }
    
    public void setDiceLowerLimit(int newLowerLimit)
    {
        diceLowerLimit = newLowerLimit;
    }
    
    public void display()
    {
        System.out.println("Dice roll is: " + diceRoll);
        System.out.println("This dice has " + diceUpperLimit "sides.");
        System.out.println("Its highest value is: " diceUpperLimit);
        System.out.println("Its lowest value is: " diceLowerLimit);
    }   
    
    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
 
}