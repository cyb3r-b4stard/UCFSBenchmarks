
public class Transacao
{
    private String data;
    private int valor;
    public String tipo;
    
    /**
     * COnstrutor para objetos da classe Transacao
     */
    public Transacao(String dataa,int valorr,String tipoo)
    {
        data = dataa;
        valor = valorr;
        tipo = tipoo;
    }

    public void setData(String dia,String mes,String ano)
    {
       if(dia!=" " && dia!=null && mes!="" && mes!=null && ano!="" && ano!=null){
           data = dia+""+mes+""+ano; 
       }else{
           System.out.println("Data Inválida");
       }
    }
    
    public String getData(){
        return data;
    }
    
    public void setValor(int novoValor){
        if(novoValor>=0){
            valor = novoValor;
        }else{
            System.out.println("Valor inválido!!");
        }
    }
    
    public int getValor(){
        return valor;
    }
    
    public void setTipo(String novoTipo){
        if(novoTipo=="C" || novoTipo=="D"){
            tipo = novoTipo;
        }else{
            System.out.println("Tipo inválido!!");
        }
    }
    
    public String getTipo(){
        return tipo;
    }
    
        
    public void saldoAtual(){
        for(int i=0; i<10;i++){
            System.out.println("Saldo Atual R$: "+(valor-));
        }
    }
    
}