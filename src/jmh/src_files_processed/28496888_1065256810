public class AMPEL {
    Kreis lichtOben; 
    Kreis lichtUnten;
    Rechteck gehaeuse;
    
    public AMPEL() {
        lichtOben = new Kreis();
        lichtUnten = new Kreis();
        gehaeuse = new Rechteck();
    }
    
    public void zeichne() {
        gehaeuse.groesseAendern(100,200);
        gehaeuse.farbeAendern("schwarz");
        gehaeuse.positionAendern(200,200);
        gehaeuse.rand();
       
        lichtOben.positionAendern(215, 225);
        lichtOben.farbeAendern("rot");
        lichtOben.radiusAendern(70);
        
        lichtUnten.positionAendern(, _y_)
    }

    /**
     * Umschalten (je nachdem)
     */
    public void umschalten() {
    }

    /**
     * Umschalten (auf ROT)
     */

    public void umschaltenRot() {
    }

    /**
     * Umschalten (auf GRÃœN)
     */

    public void umschaltenGruen() {
    }
}