public class Cislica
{
    int aCislo;
    public Cislica()
    {
        private aCislo = 10;
    }
    
    public void nastav(int paCislo)
    {
        aCislo = paCislo;
        if (aCislo == 0);
        if (aCislo == 1);
        if (aCislo == 2);
        if (aCislo == 3);
        if (aCislo == 4);
        if (aCislo == 5);
        if (aCislo == 6);
        if (aCislo == 7);
        if (aCislo == 8)
        {
            this.nakresli();
        }
            
        if (aCislo == 9);
    }
    private void nakresli()
    {
        if(aCislo = 8) 
        {
            Platno canvas = Platno.dajPlatno();
            canvas.draw(this, "black", new Rectangle(50, 60, 30, 60));
                        canvas.draw(this, "black",new Rectangle(50, 120, 30, 60));
                        canvas.draw(this, "black",new Rectangle(50, 180, 30, 60));
                        canvas.draw(this, "black",new Rectangle(50, 60, 60, 30));
                        canvas.draw(this, "black",new Rectangle(80, 60, 60, 30));
                        canvas.draw(this, "black",new Rectangle(110, 60, 60, 30));
                        canvas.draw(this, "black",new Rectangle(140, 60, 60, 30));
                        
            canvas.wait(10);
        }
    }
}