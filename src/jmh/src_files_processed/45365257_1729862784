class Stars
{
    public static void main(int n)
    {
        int i,j;
        {
            for(i=1;i>=n;i--)
            {
                for(j=1;<=(n-i);j++)
                {
                    System.out.print(" ");
                }
                for(j=1;j<=i;j++);
                {
                    System.out.println("*");
                }
            }
        }
    }
}