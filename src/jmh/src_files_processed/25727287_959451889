import javax.swing.JOptionPane;
public  class HerenciaAbstracta{
    public static void main (String args []){
        Punto punto = new Punto (8, 20);
        Circulo circulo = new Circulo (30, 10, 9.5);
        Cilindro cilindro = new Cilindro (35, 20, 4.5, 15.45);
        String salida = punto.regresaNombre () + " : " + punto + "\n";
        circulo.regresaNombre () + " : " + circulo + "\n";
        cilindro.regresaNombre () + " : " + cilindro + "\n";
        
        Figura arregloDeFiguras [] = new Figura [3];
            arregloDeFiguras[ 0 ] = punto;
            arregloDeFiguras[ 1 ] = circulo;
            arregloDeFiguras[ 2 ] = cilindro;
        
        for (int i=o; i< arregloDeFiguras.length; i++){
            salida += "\n\n" + arregloDeFiguras [i].regresaNombre() + " : " + arregloDeFiguras[ i ].toString() + "\nArear = " +
            arregloDeFiguras[ i ].regresaArea() + "\nVolumen = " + 
            arregloDeFiguras[ i ].regresaVolumen();
            
    } 
    JoptionPane.showMessageDialog(null , salida);
    System.exit(o);
}
}