package nterfetegrafice;
import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
public class Fereastra4 extends JFrame implements ActionListener{
    JButton b1;
    JButton b2;
    
    public Fereastra4(){
        super("Fereastra4");
        setSize(500,500);
        setLocationRelativeTo(null);
        set Layout(new FlowLayouy());
        
        b1.addActionListener(
            new ActionListener(){
                public void ActionPerformed(ActionEvent e){
                    int i = Integer.parseInt(b1.getText());
                    b1.setText(" " +(i+1));
                }
            }
        )
        
        b2.addActionListener(
            new ActionListener(){
                public void ActionPerformed(ActionEvent e){
                    int i = Integer.parseInt(b2.getText());
                    b2.setText(" " +(i-1));
                }
            }
        )
        
        add(b1);
        add(b2);
        setVisible(true);
    }
    
    public static void main(String[]args){
        new Fereastra4();
    }
}