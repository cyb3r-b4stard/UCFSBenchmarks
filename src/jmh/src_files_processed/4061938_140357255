 * @###### #####
 * @##/##/##
 */
import info.gridworld.actor.Bug;
import java.awt.Color;

public class MysteryBug extends Bug
{
    private int length;
    private int steps;
    private int timesMoved;
    private int squareNum;
    /**
     * Constructs a box bug that traces a square of a given side length
     * @param length the side length
     */
    public MysteryBug()
    {
        steps = 0;
        length = 1;
        timesMoved=0;
        squareNum = 0;
    }

    public MysteryBug(int l)
    {
        steps = 0;
        length = l;
        timesMoved=0;
        squareNum = 0;
    }

    /**
     * Moves to the next location of the square.
     */
    public void act()
    {
        if(steps == length && timesMoved<4){
            steps = 0;
            if(squareNum = 0){
                turn();
                squareNum++
            }
            super.act();
            if(squareNum = 1){
                turn();
                squareNum--;
            }
            timesMoved++;
        }
        else if(steps==length && timesMoved==4){
            steps = 0;
            timesMoved=0;
            while(steps<(length)){
                steps++;
                super.act();

            }
            steps =0;
        }
        super.act();
        steps++;
    }

    public  void turnLeft()
    {
        setDirection(getDirection() - 15);
    }
}