import sum.kern.*;
/**
 *
 */
public abstract class Waggon 
{
    /* Attribute */
    protected Buntstift hatStift;
    private double zhPosition;
    private double zvPosition;
    private Waggon kenntNachfolger;
    
    /* Konstruktoren */
    /**  */
    public Waggon(int phPosition,int pvPosition)
    {
        hatStift = new Buntstift();
        zhPosition = phPosition;
        zvPosition = pvPosition;
        this.zeichne();
        kenntNachfolger = null;
    }
    
    /* Methoden */
    /**  */
    public double hPosition()
    {
        return zhPosition;
    }

    /** setzt zhPosition 
     */
    public void setzehPosition(double phPosition)
    {
        this.zhPosition = phPosition;
    }

    /** @return liefert zvPosition 
     */
    public double vPosition()
    {
        return zvPosition;
    }

    /**  */
    public abstract void zeichne();

    /**  */
    public void loesche()
    {
        hatStift.radiere();
        this.zeichne();
        hatStift.normal();
    }

    /**  */
    public void bewege()
    {
        this.loesche();
        zhPosition = zhPosition - 0.2;
        this.zeichne();
    }

    /**  */
    public abstract int laenge();
    
    public void setzeNachfolger(Waggon pWaggon)
    {
        hatZug
    }
    
    public Waggon nachfolger()
    {
        return null;
    }
    
    public void koppelAn(Waggon pNeuer)
    {
        
    }
}
