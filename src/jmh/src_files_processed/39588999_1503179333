public class Game
{
	private UserInterface aGui;
	private GameEngine engine;

    /**
     * Permet de creer le jeu et les composants qui lui sont li√©s.
     */
    public Game() 
    {
		engine = new GameEngine();
		String[] directions1={};
		Player p1 = engine.addPlayer(directions1);
		String[] directions2={"nord","dessus"};
		Player p2 = engine.addPlayer(directions2);
		gui = new UserInterface(engine);
		engine.setGUI(aGui);
		gui.takeControlOfPlayer(p1);
		engine.printWelcome();
    }
    public UserInterface getGui()
    {
        return this.aGui
    }
}