
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class House
{
    private Square wall;
    private Square window;
    private Triangle roof;
    private int xPosition;
    
   /**
     * Constructor for objects of class House
     */
    public House()
    {
        wall = new Square();
        window = new Square();
        roof = new Triangle();
        drawHouse();
    }

    public void drawHouse()
    {
        
        wall.makeVisible();
        wall.changeSize(80);
        
        window.makeVisible();
        window.changeSize(30);
        window.moveHorizontal(40);
        window.moveVertical(10);
        window.changeColor("black");
        
        roof.makeVisible();
        roof.changeColor("magenta");
        roof.moveVertical(-80);
        roof.changeSize(60,80);
        roof.moveHorizontal(140);
    }
    
    public void moveHorizontal(int distance)
    {
        for (int i=0; i<100;i++){
        wall.moveHorizontal(distance);
        roof.moveHorizontal(distance);
        window.moveHorizontal(distance);
    }
    
    public void moveVertical(int distance)
    {
        wall.moveVertical(distance);
        roof.moveVertical(distance);
        window.moveVertical(distance);
    
    }
    
    public void changeSize(int size)
    {
        roof.changeSize(size,size);
        wall.changeSize(size);
        window.changeSize(size / 4);
    }
    
    public int getSize()
    {
        return wall.size();
    }
        
        
    
    public void makeVisible()
    {
        wall.makeVisible();
        roof.makeVisible();
        window.makeVisible();
    }
    
    public void makeInvisible()
    {
        wall.makeInvisible();
        roof.makeInvisible();
        window.makeInvisible();
    }
    
    public void slowMoveVertical(int distance)
    {
        wall.slowMoveVertical(distance);
        roof.slowMoveVertical(distance);
        window.slowMoveVertical(distance);
    }
    
    public void slowMoveHorizontal(int distance)
    {
       wall.slowMoveHorizontal(distance);
       roof.slowMoveHorizontal(distance);
       window.slowMoveHorizontal(distance);
    }
    
    public void switchLight()
    {
        window.changeColor("yellow");
    }
    
    public void moveLeft()
    {
        wall.moveLeft();
        roof.moveLeft();
        window.moveLeft();
    }
    
    public void moveRight()
    {
        
        wall.moveRight();
        roof.moveRight();
        window.moveRight();
    }
        
        
    
}