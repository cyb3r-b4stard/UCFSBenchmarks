
/**
 * ######## ############ ## #### # ###### ### ########## ##########.
 * 
 * ##### ### 
 * ##/##/##
 */
public class RecursivePalindrome
{
    private String w;
    RecursivePalindrome(String word)
    {
        w = word;
    }
    public String Palindrome()
    {
        if((w.substring(0,1)).equals(w.substring(w.length() - 1)))
        {
            w = w.substring(1, w.length() - 1);
            
        }
        else
        {
            return "String is not a palindrome"
        }
        return Palindrome();
    }
}