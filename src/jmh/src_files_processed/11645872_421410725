public class Freihand7
{
    Stift meinStift;
    Buntstift meinBuntstift;
    Maus meineMaus;
    Tastatur meineTastatur;
   
    /**
     * meinStift = new Stift
     * meinBuntstift = new Buntstift 
     * meineMaus = new Maus
     * meineTastatur = new Tastatur 
     */
    public Freihand7()
    {
        meineMaus.bewegeBis(vPosition.hPosition());
        meinStift.runter();
     {
        do meineMaus.istGedrueckt()
        {if (meineMaus.istGedrueckt()) 
        meinStift.runter();
        {meinStift.bewegeBis(v.Position.hPosition());
            }
        else
            {
                meinStift.hoch();

            }
        }
            
                
                if meineTastatur.wirdGedrueckt
                {
     
     meinBuntstift.setzteFarbe(ROT) --r
                    }
      
     else
                  {
                        meinBuntstift.setzteFarbe(SCHWARZ)
                        }
       }
         while (!meineMaus.doppelKlick());
    }

   
    public int sampleMethod(int y)
    {
        meinStift.gibFrei();
        meinBuntstift.gibFrei();
        meineTastaur.gibFrei();
        meineMaus.gibFrei();
    }
}