 import java.util.ArrayList;
 
public class EmailListe {
    private ArrayList<String> email;
    private int anzahlAdressen;
    private int EmailNummer;
    
    /**
     * Constructor for objects of class EmailListe
     */
    public EmailListe()     {
       email = new ArrayList<String>();
       
    }

    public int anzahlAdressen(){
        return email.size();
    }
    
    public void speichereemail(String Email)
    {
        email.add(Email);
    }
    
    public void zeigeEmail(int EmailNummer){
        if (EmailNummer >= 0 && EmailNummer < anzahlAdressen()){
            System.out.println(email.get(EmailNummer));
        }
        }
 
        
    public void entferneEmail (int Az)
    {
        if (EmailNummer < 0) {}
        
        else if (EmailNummer < anzahlAdressen()) {
            email.remove(EmailNummer);
        }
        else {}
        }
    
    
    
    public void zeigeEmailn(){
        for(String Email : email) 
        System.out.println(email);
        }
    }
    
    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public int sampleMethod(int y)    {
        return x + y;
    }

}
