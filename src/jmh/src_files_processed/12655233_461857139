import java.util.Scanner;
import java.util.Locale;
public class memorizar{
    Scanner tec=new Scanner(System.in).useLocale(Locale.US);
    public static void rellenar(double [] v){
    for(int i=0;i<v.length;i++){
        System.out.pritnln("Escribe el numero en la posicion " + (i+1));
        v[i]=tec.nextDouble();
    }
}
    
    public static void leervector(double [] v){
        for(int i=0;i<v.length;i++){
            
            System.out.println(v[i];}
        }
   
    public static double suma (double[]v){
        double suma=0;
        for(int i=0;i<v.length;i++){
            suma+=v[i];}
            return suma;}
     public static double media (double[]v){
         double suma=0
         for(int i=0;i<v.length;i++){
         suma+=v[i];}
         double media=suma/v.length;
        }
        public static double maximo(double[]v){
            max=v[0];
            for(int i=1;i<v.length;i++){
                if(max<v[i]){
                max=v[i];}
            }
            return max;}
            public static double minimo (double[]v){
                min=v[0];
                for (int i=1;i<v.length;i++){
                    if (min>v[i]){
                    min=v[i];}
                }
                return min;}
                public static int busqueda(double[]v,int valor){
                while(i<v.length && v[i]!=valor){
                i++;}
                  if (i==v.length){
                  return 1;}
                  else{
                  return -1;}
                }
                
            }
            
            
        
         
            
        