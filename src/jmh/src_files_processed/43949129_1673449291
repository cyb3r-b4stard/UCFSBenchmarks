import java.util.Scanner;
public class CuentaBancariaApp
{
    public static void main(String [] args)
    {
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Ingrese un nombre de banco: ");
        String nombreBanco = sc.nextLine();
        Banco banco = new Banco(nombreBanco);
        
        Cliente c1 = new Cliente();
        Cliente c2 = new Cliente();
  
        banco.anadirCliente(c1);
        banco.anadirCliente(c2);
        
        System.out.println("---CLIENTE 2---");
        
        /*Crear un cuenta corriente*/
        System.out.println("Crear cuenta corriente para c2");
        System.out.println("Ingrese un banco");
        String b = sc.next();
        
        System.out.println("Ingrese un numero de cuenta");
        String nroCuenta = sc.next();
        
        System.out.println("Ingrese el saldo inicial");
        int saldo = sc.nextInt();
        
        CuentaCorriente cc = new CuentaCorriente(b, nroCuenta, saldo);

        /*Crear una caja de ahorro */
        System.out.println("Crear  caja de ahorro para c2");
        System.out.println("Ingrese un banco");
        b = sc.next();
        
        System.out.println("Ingrese un numero de cuenta");
        nroCuenta = sc.next();
        
        System.out.println("Ingrese el saldo inicial");
        saldo = sc.nextInt();
        
        System.out.println("Ingrese la moneda");
        String m = sc.next();
        
        CajaAhorro ca =new CajaAhorro(String b);
        
        c2.anadirCuenta(cc);
        c2.anadirCuenta(ca);
        
        System.out.println("hola: ");
        System.out.println("Ingrese un monto a depositar a la cuenta corriente");
        int monto = sc.nextInt();
        System.out.println("Saldo actual: "+c2.depositar(monto, cc));
        
        System.out.println("Ingrese un monto a depositar a la caja de ahorro");
        monto = sc.nextInt();
        System.out.println("Saldo actual: "+c2.depositar(monto, ca));
        
        System.out.println("Ingrese un monto a depositar a la cuenta corriente");
        monto = sc.nextInt();
        System.out.println("Saldo actual: "+c2.depositar(monto, cc));
        
        System.out.println("Realizar retiros: ");
        System.out.println("Ingrese un monto a retirar de la cuenta corriente");
        monto = sc.nextInt();
        System.out.println("Saldo actual: "+c2.retirar(monto, cc));
        
        System.out.println("Ingrese un monto a retirar de la caja de ahorro");

        System.out.println("Saldo actual: "+c2.retirar(monto, ca));
        
        System.out.println("Ingrese un monto a retirar de la caja de ahorro");
        monto = sc.nextInt();
        System.out.println("Saldo actual: "+c2.retirar(monto, ca));
        
        
        banco.mostrarReporte(c2,nroCuenta);
    }
}