
import java.util.Scanner;
public class MultipleChoicePractice
{
    public static void main(String[] args)
    { Scanner in = new Scanner(System.in);
        int score = 0;
        while(!(answer.equals("c"))
        {
            System.out.println("What is my favorite color? \n a) Green b) Blue c) Purple) d) Red");
            String answer = in.nextLine();
            if(answer.equals("c")) 
            {
                System.out.println("Correct, Great Moves!");
                score++;
            }
            else
            {
                System.out.println("Not even close to being right!");
            }
        }
        
        System.out.println("What is my least favorite color? \n a) Green b) Blue c) Orange d) Red");
        String answer2 = in.nextLine();
        if(answer2.equals("a")) 
        {
            System.out.println("Correct, Great Moves!");
            score++;
        }
        else
        {
            System.out.println("Not even close to being right!");
        }
        System.out.println("Can a sparrow carry a coconut over long distances? \n a) True b) False");
        String answer3 = in.nextLine();

        if(answer3.equals("a")) 
        {
            System.out.println("Correct, Great Moves!");
            score++;
        }
        else
        {
            System.out.println("Not even close to being right!");
        }

        if (score == 0)
        {
            System.out.println("0/3! How can you be THIS bad");
        }
        else if (score == 1)
        {
            System.out.println("1/3, Embarassing!");
        }
        else if (score == 2)
        {
            System.out.println("2/3, You're getting there");
        }
        else
        {
            System.out.println("3/3, Masterpiece");
        }}}

        