package Games;
import java.util.*;
 
public class JumbleLetters
{   
        static ArrayList<String> wrds = new ArrayList<String>();
        static Stack<Character> jmbl = new Stack<Character>();
        static LinkedList<String> scrs = new LinkedList<String>();
        static Scanner scn = new Scanner(System.in);
        static  Random rndm = new Random()
    public static void main(String...args){
       
        ;
        wrds.add("TIP");
        wrds.add("technological");
        wrds.add("institute");
        wrds.add("philippines");
        wrds.add("information");
        wrds.add("technology");
    
    }  
    public void start(){
     int points=0,stop=0,highscore=0;
        do{
      
        int rndmwrds = rndm.nextInt(wrds.size());
        int rand = rndm.nextInt(wrds.get(rndmwrds).length());
        int a=0;
        while(a<wrds.get(rndmwrds).length()){
        jmbl.push(wrds.get(rndmwrds).charAt(a));
        a++;
        }
        Collections.shuffle(jmbl);
        System.out.print("Points: "+points+"\n");
        while(!jmbl.empty()){
        System.out.print(jmbl.pop());
        }
        System.out.println("\nEnter Guest : ");
        String gst = scn.next();
        if(gst.equals(wrds.get(rndmwrds))){
            System.out.println("Very Good");
            points+=5;
            stop=1;
        }else{
            System.out.print("Total Points : "+points);
            System.out.print("\nEnter Name: ");
            String name = scn.next();
            if(points>highscore){
            scrs.addFirst(name+"\t"+points);
            }else{
            scrs.add(name+"\t"+points);
            }
            stop=0;
       
        }
    }while(stop!=0);
    }
}