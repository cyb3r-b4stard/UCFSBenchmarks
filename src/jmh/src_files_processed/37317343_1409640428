import java.util.Scanner;
 
public class RockPaperScissors 
{ 
    public static void main(String[] args)
    { 
        Scanner input = new Scanner(System.in); 
        
        int number = (int)(Math.random() * 3); 
        
        System.out.println("Input either scissors (0), rock (1), or paper(2): "); 
        
        int randomNumber = input.nextInt(); 
        
        switch (number) { 
            case 0: scissor;
                if (randomNumber == 0) 
                System.out.println("Both you and the computer chose scissor. It is a draw"); 
                else if (randomNumber == 1) 
                System.out.println("You chose rock and the computer chose scissor.  You win! "); 
                else if (randomNumber == 2) 
                System.out.println("You chose paper and the computer chose scissor. The computer wins."); 
                break; 
            case 1: rock ;
                if (randomNumber == 0)
                System.out.println("You chose scissor and the computer chose rock.  The computer wins."); 
                else if (randomNumber == 1)
                System.out.println("Both you and the computer chose rock.  It is a draw"); 
                else if (randomNumber == 2) 
                System.out.println("You chose paper and the computer chose rock.  You win!"); 
                break; 
            case 2: paper;
                if (randomNumber == 0) 
                System.out.println("You chose scissor and the computer chose paper.  You win!"); 
                else if (randomNumber == 1) 
                System.out.println("You chose rock and the computer chose paper.  The computer wins."); 
                else if (randomNumber == 2)
                System.out.println("Both you and the computer chose paper.  It is a draw"); 
                break; 
        }
            
    }
       
}      