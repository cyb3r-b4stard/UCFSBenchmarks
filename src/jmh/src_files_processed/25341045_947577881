import java.io.*;
public class Dictionary
{
   private Word[] a;
   private String s;
   /**
    * constructeur
    * 
    * @pre s!=null
    * @post rentre dans un tableau de word tout les mots du fichier passe en argument
    */
   public Dictionary(String s)
   {
       assert s!=null:"erreur pas de fichier saisi";
       this.s=s;
       this.a=construct();
    }
    private Word[] construct()
    {
        Word[] r= new Word[15000];
        int[] y= new int[15000];
        try
        {
            File f = new File(s);
            BufferedReader p= new BufferedReader(new FileReader(f));
            String z= p.readLine();
            for(int i=0;z!=null;i++)
            {
                int c= z.indexOf(';');
                String e=z.substring(0,c);
                y[i]=Integer.parseInt(z.substring(c+1,z.length()));
                r[i]= new Word(e,y[i]);
                z=p.readLine();
            }
        }
        catch(FileNotFoundException exception)
        {
            System.out.println( "erreur le fichier n'a pas ete pas trouve");  
        }
        catch(IOException exception)
        {
            System.out.println("erreur la ligne n'a pas sut etre lue");
        }
        p.colse()
        return r;
    }
}