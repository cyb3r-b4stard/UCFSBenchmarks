public class Persona
{
    private String nombre;
    private String telefono;
    private String apellido;   
    public Persona()
    {
        this.nombre = "";
        this.apellido = "";
        this.telefono = "";
    }
    public Persona(String telefono,String nombre,String apellido)
    {
        this.nombre = nombre;
        this.apellido = apellido;
        this.telefono = telefono;
    }
   
    public void setNombre(String nombre)
    {
        this.nombre = nombre;
    }
    public String getNombre()
    {
        return nombre;
    }
    public  void setApellido(String apellido)
    {
        this.apellido=apellido;
    }
    public String getApellido()
    {
        return  apellido;
    }
    public void setApellido(String apellido)
    {
        this.apellido = apellido;
    }
    public String getTelefono()
    {
        return telefono;
    }
    public void setTelefono(String telefono)
    {
        
        if(telefono.length == 9)
        {
            if(validarDigitos(telefono))
            {
                this.telefono = telefono;
            }
            else
            {
                System.out.println("Solo debe ingresar digitos numericos");
            }
                
        }
        else
        {
            System.out.println("Debe ingresar el numero con 9 caracteres");
        }       
    }
    
    public String toString()
    {
        String res;
        res =   "nombre:"+this.nombre+
                "apellido:"+this.apellido +
                "telefono"+this.telefono;
        return res;
    }
    
        public void imprimir()
    {
        String res;
        res =   "nombre:"+this.nombre+
                "apellido:"+this.apellido +
                "telefono"+this.telefono;
        System.out.println(res);
    }
    
    private boolean validarDigitos(String valor)
    {
        boolean res
        for(int i=0; i <valor.length(); i++)
        {
            
            if(valor.charAt(i) == '0' || valor.charAt(i) == '1' || valor.charAt(i) == '2' || valor.charAt(i) == '3' || valor.charAt(i) == '4' ||
            valor.charAt(i) == '5' || valor.charAt(i) == '6' || valor.charAt(i) == '7' || valor.charAt(i) == '8' || valor.charAt(i) == '9' )
            {
                res = true;
            }
            else
            {
                res = false
                return false;
            }
        }
        return res;
    }
}