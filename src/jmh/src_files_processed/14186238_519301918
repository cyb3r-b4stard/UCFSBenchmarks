/*#.#.# ## ######### ### ### ### ########## ## ### ###### #### ####### ### ####### */
import java.io.*
class Angle
{
    private int deg,min;

    Angle (int dg,int mn)
    {
        deg=dg;
        min=mn;
    }

    void display()
    {
        System.out.println(deg+" degrees "+min+" minutes ");
    }

    Angle getSum(Angle ang)/* box */
    {
        int ang1=min*60+deg;
        int ang2=ang.min*60+deg;
        int sumOfAngle=ang1+ang2;
        Angle sumOfObj = new Angle(sumOfAngle/60,sumOfAngle%60);
        return sumOfObj;
    }

    Angle getDiff(Angle ang)
    {
        int ang1=min*60+deg;
        int ang2=ang.min*60+deg;
        int sumOfDiff=ang1-ang2;
        Angle diffOfObj = new Angle(sumOfDiff/60,sumOfDiff%60);
        return sumOfObj;   
    }
}

public class AngleMain
{
    public static void main() throws IOException
    {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        int min1,deg1,min2,deg2;

        System.out.println("Enter the degree and minutes of First Angle: ");
        deg1=Integer.paresInt(br.readLine());
        min1=Integer.parseInt(br.readLine());
        System.out.println("Enter the degree and minutes of Second Angle: ");
        deg2=Integer.paresInt(br.readLine());
        min2=Integer.parseInt(br.readLine());

        Angle ang1 = new Angle(deg1,min1);
        Angle ang2 = new angle(deg2,min2);
        sumAngle=ang1.getSum(ang2);
        diffAngle=ang1.getDiff(ang2);
        
        System.out.println("First Angle: ");
        ang1.display();
        System.out.println("Second Angle: ");
        ang2.display();
        System.out.println("Sum of the Two Angles: ");
        sumAngle.display();
        System.out.println("Difference of the two Angles: ");
        diffAngle.display();
    }
}
    }
}

        