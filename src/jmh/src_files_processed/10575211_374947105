import java.util.Scanner;
public class GuessingGame
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        int count = 0;
        boolean won = false;
        int num = (int) (Math.random()*200 + 1);
        System.out.println("Welcome to the Guessing game. pick a number between 1-100");       
        while(!won)
        {
            count ++;
            int guess = in.nextInt();
            if(guess > num)
            System.out.println("Sorry number is greater than number guessed.");
            if(guess < num)
            System.out.println("Sorry number is less than number guessed.");
            if(guess == num)
            System.out.println("Hooray you guessed correctly.");
            won = true
}
}
}