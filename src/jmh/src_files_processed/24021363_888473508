public class NotenRechner
{
    private int punkte;
    private String note;

    /**
     * Constructor for objects of class Notenrechner
     */
    public NotenRechner()
    {
        punkte =0;
        note="6";
    }

    /**
     * Sie soll Noten in Punkte umrechnen
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public int noteInPunkte(String note)
    {
        switch n{
            case:"1+"
        System.out.println("15"); 
            break; 
        if(note=="1+")return 15;
        if(note=="1")return 14;
        if(note=="1-")return 13;
        if(note=="2+")return 12;
        if(note=="2")return 11;
        if(note=="2-")return 10;
        if(note=="3+")return 9;
        if(note=="3")return 8;
        if(note=="3-")return 7;
        if(note=="4+")return 6;
        if(note=="4")return 5;
        if(note=="4-")return 4;
        if(note=="5")return 3;
        if(note=="5-")return 2;
        if(note=="6")return 1;
        else return -100;
    }
    /**
     * Sie soll Noten in Punkte umrechnen
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public String punkteInNote (int punkte)
    {
        if(punkte==15)return "1+";
        if(punkte==14)return "1";
        if(punkte==13)return "1-";
        if(punkte==12)return "2+";
        if(punkte==11)return "2";
        if(punkte==10)return "2-";
        if(punkte==9)return "3+";
        if(punkte==8)return "3";
        if(punkte==7)return "3-";
        if(punkte==6)return "4+";
        if(punkte==5)return "4";
        if(punkte==4)return "4-";
        if(punkte==3)return "5+";
        if(punkte==2)return "5";
        if(punkte==1)return "6";
        else return "Error";
}
}