public class WilsonSean_HW5_ItemCatalog
{
    String color;
    String make;
    String model;
    double price;
    int currentQuantity;
    
    public static void main (String[] args)
    {
        
    }
    
    
    
    public Rifle(String colorRifle, String makeRifle, String modelRifle, double priceRifle, int quantityRifle)
        {
        this.color = color;
        this.make = make;
        this.model = model;
        this.price = price;
        this.currentQuantity = currentQuantity;
    }

    public String DisplayRifle()
    {
        return String.format("Shogtun: A %s %s %s. Price: $%.2f. Quantity Available: %d",color, make, model, price, currentQuantity);
    }

    public Pistol (String colorPistol, String makePistol, String modelPistol, double pricePistol, int quantityPistol)
    {
        this.color = color;
        this.make = make;
        this.model = model;
        this.price = price;
        this.currentQuantity = currentQuantity;
    }

    public String DisplayShotgun()
    {
        return String.format("Shogtun: A %s %s %s. Price: $%.2f. Quantity Available: %d",color, make, model, price, currentQuantity);
    }

    public Rifle2 (String colorRifle2, String makeRifle2, String modelRifle2, double priceRifle2, int quantityRifle2)
    {
        this.color = color;
        this.make = make;
        this.model = model;
        this.price = price;
        this.currentQuantity = currentQuantity;
    }

    public String DisplayShotgun()
    {
        return String.format("Shogtun: A %s %s %s. Price: $%.2f. Quantity Available: %d",color, make, model, price, currentQuantity);
    }
}
}