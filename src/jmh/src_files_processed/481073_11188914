import java.util.Calendar; 
import javax.swing.JOptionPane;
import java.util.Scanner;

public class Pluviometría extends JOptionPane
{
    private int id;
    private double cantidad;
    private Calendar fecha;

    /**
     * Constructor for objects of class Pluviomatría
     */
    public Pluviometría()
    {
        id = 0;
        cantidad = 0;
        fecha = Calendar.getInstance(); 
    }
    
    public void muestreFecha(){
       this.showMessageDialog(null, "Hora actual = "+fecha.getTime());
    }
    
    public void establezcaFecha(int an, int me, int di, int ho, int mi){
        fecha.set(an, me, di, ho, mi);
    }

    public int demeEntero(String msg){
       Scanner entrada = new Scanner(System.in);  
       System.out.print (msg+" ?? = ");           
       int valor = entrada.nextInt();            
       return valor;                              
    }
    
    public void leaFecha(){
      int año;
      int mes;
      int dia;
      int hora;
      int min;
      
      año = demeEntero("Año (1..2013)");
      mes = demeEntero("Mes (1-12)");
      mes=mes-1;
      dia = demeEntero("Dia (1-31)");
      hora = demeEntero ("Hora (1-24)");
      min = demeEntero ("Minutos (0-59)");
      establezcaFecha(año, mes, dia, hora, min);
    }
    
    public int leaEntero(String msg){
      String mm = this.showInputDialog(msg);
      return Integer.parseInt(mm);
    }
    
    public void leaLluvia(){
       cantidad = leaEntero("Cant lluvia en mm?");
    }
    
    public void leaFecha2(){
    int año;
    int mes;
    int día;
    int hora;
    int minutos;
    
    año=leaEntero("De un año del 1 al 2013");
    mes=leaEntero("De un mes del 1 al 12");
    if(mes==1 ||mes==3||mes==5||mes==7||mes==8||mes==10||mes==12){}
    día=leaEntero("De un día del 1 al 31")
    }
    
}