
/**
 * ##### ## ### ######## # ######. ##### ######.
 * 
 * @###### #### ####### 
 * @####### #.#
 */
public class Person
{
    private String Fname;
    private String lname;
    private int Age;
    public static final int MARRIED=0;
    public static final int SINGLE=1;
    public static final int WIDOWED=2;
    public static final int DIVORCED=3;
    public static final int MALE=4;
    public static final int FEMALE=5;
    private boolean petOwner;
    private int Marriedstatus;
    private int Gender;
    private static final int upperAge=100;
    
    
    /**
     * Constructor for objects of class Person
     */
    public Person(String F, String l, int m, int g, boolean p){
            if(F.length()>1){
                Fname=F;}
                else{
                    System.out.println("Your first name was too short.");
        }
            if(l.length()>1){
                lname=l;}
                else{
                    System.out.println("Your last name was too short.");
        }
        Marriedstatus=m;
        Gender=g;
        petOwner=p;
    }
   
    public int getupperAge(){
        return upperAge;
    }
    
    public void setFname(String F){
        Fname=F;
    }
    
    public String getFName(){
        return Fname;
    }
    
    public void setlname(String l){
        lname=l;
    }
    
    public String getlName(){
        return lname;
    }
    
    public void setGender(int g){
        if(g==4){
        System.out.println("You are a male.");
        Gender = 4;
    }
        else if (g==5){
        System.out.println("You are a female");
        Gender = 5;
    }
        else{System.out.println("This is an invalid gender.");
    }
    }
    
    public int getGender(){
        return Gender;
    }
    
    public void setMarriedstatus(int m){
        if(m==0){
        System.out.println("You are married.");
        Marriedstatus = 0;
    }
        else if (m==1){
        System.out.println("You are single.");
        Marriedstatus = 1;
    }
        else if (m==2){
        System.out.println("You are widowed.");
        Marriedstatus = 2;
    }
        else if (m==3){
        System.out.println("You are divorced.");
        Marriedstatus = 3;
    }
        else{System.out.println("This is an invalid marital status.");
    }
    }
    
    public int getMarriedstatus(){
        return Marriedstatus;
    }
    
    public void setpetOwner(boolean p){
        petOwner=p;
    }
    
    public boolean getpetOwner(boolean p){
        return petOwner;
    }
    
    public void setAge(int a){
        if((a<upperAge)&&(a>0)){
            System.out.println("Your age is invalid.");
        }
    }
    
    public int getAge(){
        return Age;
    }
    
    forename + surname= full name
}