
public class ClockTime
{
    private int hour;
    private int minute;
    private int second;

    public ClockTime()
    {
        hour = 0;
        minute = 0;
        second = 0;
    }

    public ClockTime(int hours,int minutes,int seconds)
    {
        if (minutes > 59) {
            int mint = minutes % 60;
            minutes = mint + minutes; }
        else if ( mint < 0) {
            mints = 0;
    }
    else if (minutes > 59)
    {
        hours += minutes % 60;
    }
    else if ( mint < 0) {
        mints = 0;
    }
    else if (hours > 24)
    {
        hours = hours % 24;
    }
    else if ( hours < 0)
    {
        hours = 0;   
    }

    
    
}
   
 