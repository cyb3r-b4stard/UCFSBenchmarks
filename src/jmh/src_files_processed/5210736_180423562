import java.util.Scanner;
public class HoursToSeconds
{
    public static void main(String[] args)
    {
        Scanner scan = new Scanner(System.in);
        System.out.println("Lets change hours to seconds.");
        System.out.println("First, give me the amount of hours.");
        int hour = scan.nextInt();
        System.out.println("Now, give me the amount of minutes.");
        int min = scan.nextInt();
        System.out.println("Finally, give me the amount of seconds");
        int sec = scan.nextInt();
        System.out.println("");
        System.out.println(hour + " hour(s), " + min + " minutes, and " + sec + " seconds \n"
                          "is equal to " + ((hour * 120) + (min * 60) + sec)
    }
}