public class SCHLAEGER extends RECHTECK
{
    /** Attribute */
    private int deltaX;
    private int deltaY;
    /** Referenzattribute */

    /** Konstruktor fuer Objekte der Klasse SCHLAEGER */
    public SCHLAEGER(int x, int y)
    {super.setzeFarbe ("blau");
       this.deltaX = 0;
       this.deltaY =1;
       super.setzeGroesse(10, 100);
       super.setzeMittelpunkt(x, y);
       
        
    }

  

public void bewegen (){
super.verschiebenUm(deltaX, deltaY);

}
public void setzeDeltaX(int deltaXneu){
this.deltaX= deltaXneu;
}
public void setzeDeltaY(int deltaYneu){
    deltaY= deltaYneu;
}
public void verringereDeltaY(){
    this.deltaY= deltaY-1;
}
public void erhoeheDeltaY(){
    this.deltaY = deltaY +1 ;
}
public void stopp( String wo){
    if(wo=="oben"){
        setzeMittelpunkt(M_x, 45);}
    else if(wo=="unten"){
        setzeMittelpunkt(M_x, 555);}
   
}
