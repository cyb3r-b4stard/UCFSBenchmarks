public class Datentypen
{
   private byte b;
   private short s;
   private int i;
   private long l;
   private float f;
   private double d;
   
   public Datentypen (byte valueByte){
       IO.println("Der Ursprüngliche Datentyp war Byte.");
       
       b = valueByte;
       s = valueByte;
       i = valueByte;
       l = valueByte;
       f = valueByte;
       d = valueByte;
   }
   
   public Datentypen (short valueShort){
       IO.println("Der Ursprüngliche Datentyp war Short.");
       
       b = (byte)valueShort;
       
       s = valueShort;
       i = valueShort;
       l = valueShort;
       f = valueShort;
       d = valueShort;
   }
   
   public Datentypen (int valueIntenger){
       IO.println("Der Ursprüngliche Datentyp war Intenger.");
       
       b = (byte)valueIntenger;
       s = (short)valueIntenger;
       
       i = valueIntenger;
       l = valueIntenger;
       f = valueIntenger;
       d = valueIntenger;
   }
   
   public Datentypen (long valueLong){
       IO.println("Der Ursprüngliche Datentyp war Long.");
       
       b = (byte)valueLong;
       s = (short)valueLong;  
       i = (int)valueLong;
       
       l = valueLong;
       f = valueLong;
       d = valueLong;
   }
   
   public Datentypen (float valueFloat){
       IO.println("Der Ursprüngliche Datentyp war Float.");
       
       b = (byte)valueFloat;
       s = (short)valueFloat;  
       i = (int)valueFloat;
       l = (long)valueFloat;

       f = valueFloat;
       d = valueFloat;
   }
   
   public Datentypen (double valueDouble){
       IO.println("Der Ursprüngliche Datentyp war Double.");
       
       b = (byte)valueDouble;
       s = (short)valueDouble;  
       i = (int)valueDouble;
       l = (long)valueDouble;
       f = (float)valueDouble;
             
       d = valueDouble;
   }
   
   public void print(){
       IO.println("Byte: " + b);
       IO.println("Short: " + s);
       IO.println("Intenger: " + i);
       IO.println("Long: " + l);
       IO.println("Float: " + f);
       IO.println("Double: " + d);
       IO.println("ASCII: " + getASCII());
       IO.println("Max Intengener: " + getMaxInteger());
       IO.println("Rechnung1: " + rechnung1());
       IO.println("Rechnung2: " + rechnung2());
    }
    
   public char getASCII(){
       char ch = (char) i; /* Eingabe i soll char werden und char ist ch*/
       return ch; /* Rückgabe ch */
    }
    
   public int getMaxInteger(){
       int v = i;
       while(v<v+1){
           v++;
        }
       return v;        
   }
   
    public double rechnung1(){
        double x;
        x = (0.362*100)/100;
        return x;
   }
   
   public double rechnung2(){
       double y;
       y = 5.6 + 5.8;
       return y;
   }
   
  /* public String getBinary(){
       int v = i;
       Integer.parseInt(getBinary());
       while(v > 0){
          if(v/2 == 0){
              return 0;
            } else {
              return 1;
            }
        }
    */
   
   public String getBinary(){
       int v = i;
       while(v > 0){
          if(v%2 == 1){
              String a = "1";
              return String s = String.valueOf(i);
          } else {
              String a = "0";
              return v;
          }
        }
       return String;
   }
    
} 