
/**
 * ########## #
 * 
 * ##### #####
 * ##### ## ####
 */
public class Circle
{
    double radius
   public Circle()
   { radius = 0.0;
    }
   public void setRadius(double r)
   {radius = r;
    }
   public double getRadius()
   {return radius;
    }
  public double getArea()
  {return PI * radius *radius; 
    }
  public double getDiameter()
  {return radius *2;
    }
  public double getCircumference()
  { return 2 * PI * radius;
    }
   
}