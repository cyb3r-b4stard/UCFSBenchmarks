import basis.*;
public class Quadratflaeche {
    private Fenster f;
    private Stift s;
    private Knopf b;
    private boolean wurdeGedrueckt;
    private Leinwand l;
    
    public Quadratflaeche(){
        f = new Fenster (1080,720);
        s = new Stift();
        b = new Knopf("Ende");
        xpos = 12;
        b.setzePosition(xpos, ypos)
        
        
    }
    public void fuehreAus (){
       while (!b.wurdeGedrueckt())
       {
       
        this.gibFrei();
       }
    }
       public void gibFrei() {
        s.gibFrei();
        b.gibFrei();
        l.gibFrei();
        f.gibFrei(); 
    }
}