public class SpinningDiskDevice
{
    private int lastInput;
    private int segmentLength;
    private int transitionCount;

    /**
        Constructs a spinning disk device.
    */
    public SpinningDiskDevice()
    {
        this.lastInput = lastInput;
        this.segmentLength = segmentLength;
        this.transitionCount = transitionCount;
    }

    /**
        Processes a new input.
        @param input 0 or 1
    */
    public void add(int input)
    {
        int counter = 0;
        counter++;
        lastInput = lastInput+ input;
        int number = counter - lastInput
        
        transitionCount = transitionCount + number;
    }

    /**
        Gets the number of transitions from 0 to 1 or 1 to 0.
        @return the transition count
    */
    public int getTransitionCount()
    {
        return transitionCount; 
    }

    /**
        Gets the length of the current segment.
        @return the segment length
    */
    public int getSegmentLength()
    {
        return 0; 
    }
}
