public class Kamel
{
    protected int alter;
    protected int gewicht;
    protected String name;
    protected WECHSELBILD darstellung;
    
    protected String[] dateinamen;
    
    
    

    /**
     * Konstruktor der Klasse Kamel
     * 
     * @param   alter       Alter des Kamels in Jahren
     * @param   gewicht     Gewicht des Kamels in kg
     * @param   name        Name des Kamels
     */
    public Kamel(int alter, int gewicht, String name)
    {
        this.alter = alter;
        this.gewicht = gewicht;
        this.name = name;
        dateinamen = new String[2];
        dateinamen[0] = kamel_n_1.gif;
        dateinamen[1] = kamel_n_2.gif;
        darstellung = new WECHSELBILD(100,200,dateinamen[]);
    }
    
    
    
    public int nennealter(){
        return this.alter;
    }
    
    
    
    public int nennegewicht(){
        return this.gewicht;
    }
    
    
    
    public String nennename(){
        return this.name;
    }
    
    public void information()
    {
        System.out.println("");
        System.out.println("Ich hei√üe "+name );
        System.out.println("Ich bin "+alter+" Jahre alt");
        System.out.println("Ich wiege "+gewicht+ " kg");
    }
    
    
    
    public void schritt(int n)
    {
        
    }

    
    
    
    public void laufen()
    {
    }
    
    
    
    public void schlafen()
    {
    }
    
    
    
}