
/**
 * #### ###### ## #### ### ## ######### #######
 * #### ###### ###### ###### ###### #### ####### ###### ## ####### ###### #### ### ##### ## ### ###### ##### ## ###### #######
 * 
 * 
 * 
 * @###### #### ######
 * @####### ##/##/####
 */
public class Vijand
{
   private int vijandPosX, vijandPosY;
    
    /**
     * Constructor voor de klasse Ruimteschip
     * hier word de vijand aangemaakt 
     * @param vijandPosX X-positie van de vijand
     * @param vijandPosY Y-positie van de vijand
     */ 

    public Vijand(int vijandPosX,int vijandPosY)
    {
        this.vijandPosX=vijandPosX;
        this.vijandPosY=vijandPosY;
        

    }
    /**
     * Dit is voor collision detection van de vijand
     * Hierbij word er een rechthoek rond de Vijand getekend 
     */
    public Rectangle rctvijand()
    {
        return new Rectangle(vijandPosX, vijandPosY,1,1);
    }
    
    /**
     * Methode voor het opvragen van de X positie van de vijand
     * @return de X positie van het vijand
     */
    public int getX()
    {
        return vijandPosX;
    }
     /**
     * Methode voor het opvragen van de Y positie van de vijand
     * @return de Y positie van het vijand
     */
    public int getY()
    {
        return vijandPosY;
    }
    /**
     * beweeg de vijand naar links
     */
    public void setBeweeglinks()
    {
        return vijandPosX--;
    }
    /**
     * beweeg de vijand naar links
     */
    public void setBeweegrechts()
    {
        return vijandPosX++;
    }
    /**
     * verander de y positie van de vijand
     * @param vijandPosY nieuwe y-coordinaat
     */
    public void setkogelPosY(int vijandPosY)
    {
        this.vijandPosY = vijandPosY; 
    }
    
    /**
     * verander de y positie van de vijand
     * @param vijandPosY nieuwe y-coordinaat
     */
    public void setkogelPosX(int vijandPosX)
    {
        this.vijandPosX = vijandPosX; 

  
