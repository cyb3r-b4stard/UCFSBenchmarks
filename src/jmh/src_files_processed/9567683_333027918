                                          public static void editTable(String[][]table,int tableCtr)throws IOException
                                          {
                                              String goEdit;
                                              for(int i=0;i<table.length;i++);
                                              {
                                                  for(int j=0;j<table[0].length;j++);
                                                  {
                                                      System.out.print(table[i][j]+"\t");
                                                    }
                                                    System.out.print("\nDO YOU WANT TO EDIT THIS ABOVE DISPLAYED RECORD Y/N/C ");
                                                  goEdit=br.readLine();
                                                  if(goEdit.equalsIgnoreCase("n"))
                                                  {
                                                      continue;
                                                    }
                                                    else if(goEdit.equalsIgnoreCase("y"))
                                                    {
                                                        for(int k=0;k<table[0].length;k++)
                                                        {
                                                            System.out.print(table[i][k] +"\tenter new value: ");
                                                            table[i][k]=br.readLine();
                                                        }
                                                    }
                                                    else
                                                    {
                                                        System.out.println("CANCELLING EDIT");
                                                        break;
                                                    }
                                                }
                                                System.out.println("After edit");
                                                display(table,tableCtr);
                                            }
                                            public static void deleteFromDb()
                                            {
                                                String search=" ",delCh="n";
                                                try
                                                {
                                                    System.out.print("Enter the element to be deleted");
                                                    search=br.readLine();
                                                }catch(Expection e)
                                                {
                                                    e.printStackTrace();
                                                }
                                                Found t1=LinearSearch(room,search);
                                                if(t1.row!=-1 &&tl.col=-1)
                                                {
                                                    for(int c=0;c<room[0].length;c++)
                                                    {
                                                        System.out.print(room[t1.row][c]+"");
                                                    }
                                                    System.out.println("DO YOU WANT TO DELETE YES OR NO");
                                                    try
                                                    {
                                                        delCh=br.readLine();
                                                    }catch(Exception e)
                                                    {
                                                        e.printStackTrace();
                                                    }
                                                    if(delCh.equalsIgnoreCase("y"))
                                                    {
                                                        display(room,rcount);
                                                        for(int sh=t1.row;sh<rcount;sh++)
                                                        {
                                                            for(int c=0;c<room[0].length;c++)
                                                            {
                                                                room[sh][c]=room[sh+1][c];
                                                            }
                                                        }
                                                            for(int col=0;c<room[0].length;col++)
                                                            {
                                                                room[rcount][col] = "";
                                                            }
                                                            rcount--;
                                                            display(room,rcount);
                                                        }
                                                    }
                                                    else
                                                    {
                                                        System.out.println("Element not found");
                                                    }
                                                }
                                                 public static Found linearSearch(String[][]x,String srch)
                                                 {
                                                 
                                                
                                                    for(int i = 0;i<x.length;i++)
                                                    {
                                                         for(int j = 0;j<x[0].length;j++)
                                                         {
                                                             if((x[i][j].trim()).equalsIgnoreCase(srch))
                                                             {
                                                                 Found f1=new Found(i,j);
                                                                 return f1;
                                                                }
                                                            }
                                                        }
                                                        System.out.println(srch+"Element not found");
                                                        Found f2=new Found(-1-1);
                                                        return f2;
                                                    }
                                                
                                                    
                                                    public static void display(String[][]x,int ctr)
                                                    {
                                                        for(int i=0;i<=ctr;i++)
                                                        {
                                                            for(int j=0;j<x[0].length;j++)
                                                            { System.out.println(x[i][j]+"\t");
                                                            }
                                                            System.out.println();
                                                        }
                                                        System.out.println();
                                                    }
                                                }