  package HotelManagement;
                                     import java.util.Random;
                                     import java.io.*;
                                     import java.lang.String;
                                     
                                     class Found
                                     {
                                         int row,col;
                                         Found(int row,int col)
                                         {
                                             this.row = row;
                                             this.col = col;
                                            }
                                        }
                                        public class Administrator extends DataStore
                                        {
                                            public static void AdminMenu()throws IOException
                                            {
                                                int aCh = 0;
                                                do
                                                {
                                                    try
                                                    {
                                                        Thread.sleep(1000);
                                                    }catch(Exception e)
                                                    {
                                                        System.out.println(e);
                                                    }
                                                    System.out.print("\t1.View Info\n\t2.Add Info\n\t3.Edit Info\n\t4.Delete Info \n\t5.View Mail\n\t6.Exit\n\tEnter your choice\t");
                                                    aCh = Integer.parseInt(br.readLine());
                                                    switch(aCh)
                                                    {
                                                        case 1:
                                                        System.out.println("View Info");
                                                        view();
                                                        break;
                                                        case 2:
                                                        System.out.println("OPTION"+aCh+"\tAdd Info");
                                                        add();
                                                        break;
                                                        case 3:
                                                        System.out.println("OPTION"+aCh+"\tEdit Info");
                                                        edit();
                                                        break;
                                                        case 4:
                                                        System.out.println("OPTION"+aCh+"\tDelete Info");
                                                        delete();
                                                        break;
                                                        case 5:
                                                        System.out.println("OPTION"+aCh+"\tView Mail");
                                                        viewMail();
                                                        break;
                                                        case 6:
                                                        System.out.println("OPTION"+aCh+"\tExit from Admin");
                                                        break;
                                                        default:System.out.println("OPTION"+aCh+"\tInvalid choice.Try Again");
                                                    }
                                                }
                                                while(aCh!=6);
                                            }
                                            public static void view()
