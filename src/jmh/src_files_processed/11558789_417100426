import java.util.Scanner;
import java.util.Random;
public class pp15
{
    public static void main(String[] args)
    {
        Scanner scan = new Scanner (System.in);
        Random generator = new Random();
        System.out.println("This is a slot machine! Press enter to play or type any other string to exit.");
        String condition = scan.nextLine();
        while (condition.equals(""))
        {
            int num1 = generator.nextInt(9);
            int num2 = generator.nextInt(9);
            int num3 = generator.nextInt(9);
            
            System.out.println(num1+num2+num3+);
            if(num1 == num2 || num1 == num3 || num2 == num3) System.out.println("Wow! Two of the numbers are the same!");
            else if(num1 == num2 == num3) System.out.println("INCREDIBLE!!! All three numbers are the same!");
            
            condition = scan.nextLine();
        }
    }
}