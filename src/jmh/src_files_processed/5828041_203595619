import javax.swing.*;
import java.awt.*;
import java.awt.Color;
import java.awt.event.*;
import java.awt.event.*;

/**
 * ##### # ########### ## ##### ###################### ####.
 * 
 * @###### ###### ########
 * @####### ##/##/####
 */
public class FrisdrankAutomaatPaneel extends JPanel
{
    private JLabel prijs, uitlegComboBox;
    private JButton geefDrank, reset;
    private JComboBox<EuroMunt> keuzemenu;
    private static JTextArea wisselgeldVak; 
    private JPanel comboBoxPaneel, knoppenPaneel;
    private JTextField ingeworpenBedrag;
    private static FrisdrankAutomaat mijnAutomaat;
    
    public FrisdrankAutomaatPaneel(double kostPrijs)
    {
        
        
        mijnAutomaat = new FrisdrankAutomaat(kostPrijs);
        prijs = new JLabel("Automaat - De Kraal Hier dranken voor " + mijnAutomaat.getKostprijsDrank() + " €");
        
        ingeworpenBedrag = new JTextField("");
        ingeworpenBedrag.setText("Ingeworpen bedrag is 0 €");
        ingeworpenBedrag.setEditable(false);
        
        
        uitlegComboBox = new JLabel("");
        uitlegComboBox.setText("Kies de in te werpen munt");
        keuzemenu = new JComboBox<> (EuroMunt.values());
        keuzemenu.setSelectedItem(null);
        comboBoxPaneel = new JPanel();
        comboBoxPaneel.setBackground(Color.lightGray);
        comboBoxPaneel.setLayout(new GridLayout(2,1));
        comboBoxPaneel.add(uitlegComboBox);
        comboBoxPaneel.add(keuzemenu);
        
        wisselgeldVak = new JTextArea("Hier volgt uw wisselgeld :\n", 8, 20);
        
        geefDrank = new JButton("Geef Drank");
        reset = new JButton("Reset");
        knoppenPaneel = new JPanel();
        knoppenPaneel.add(geefDrank);
        knoppenPaneel.add(reset);
        
        geefDrank = new JButton("Geef Drank");
        reset = new JButton("Reset");
        
        

        add(prijs);
        add(ingeworpenBedrag);
        add(comboBoxPaneel);
        add(knoppenPaneel);
        add(wisselgeldVak);
       
        
        
    }
    
    import java.awt.event.*;
    class geefDrankHandler implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
            
        }
    }
    
    import java.awt.event.*;
    class comboBoxHandler implements ActionListener
    {
        public void actionPerformed(ActiontEvent e)
        {
            
        }
    }
    
    import java.awt.event.*;
    class resetHandler implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
            
        }
    }
}
    
