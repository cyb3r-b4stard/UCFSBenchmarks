public class Cliente{
    private String rut;
    private String nombre;
    private int edad;
    private Cuenta cuenta;
    private boolean inicioSesion;

    /** Constructor for objects of class Cliente
     */
    public Cliente(){
      rut = new String();
      nombre = new String();
      edad = 0;
      cuenta= new Cuenta();
      inicioSesion= true;

    }
    public Cliente(String nRut, String nNombre, int nEdad, Cuenta nCuenta, boolean nInicioSesion){
        rut=nRut;
        nombre=nNombre;
        edad=nEdad;
        cuenta=new Cuenta();
        inicioSesion=nInicioSesion;
    }
    
    /**accesadores
    */
    public String getRut(){
        return rut;
    }
    public String getNombre(){
        return nombre;
    }
    public int getEdad(){
        return edad;
    }
    public Cuenta getCuenta(){
        return cuenta;
    }
    public boolean getInicioSesion(){
        return inicioSesion;
    }

    /** mutadores
    */
    public void setRut(String nRut){
        rut=nRut;
    }
    public void setNombre(String nNombre){
        nombre=nNombre;
    }
    public void setEdad(int nEdad){
        edad=nEdad;
    }
    public void setInicioSesion(boolean nInicioSesion){
        inicioSesion=nInicioSesion;
    }             /** Metodos Customers */
    public void imprimir(){
        System.out.println ("Los Datos del cliente son: "+ getRut() + getCuenta().getUsuario() + getCuenta().getClave());
    }
         public void bloquearCuenta(){
        if(getCuenta().getIntentos()>=3){
                getCuenta().setEstado(true);
                System.out.println("USUARIO BLOQUEADO");
        }
    }
    public boolean bloqueoMayorEdad(){
         if(getCuenta().getEstado()==true && getEdad()>=18){
             return true;
         }else{
             return false;
         }
    }


    public void iniciarSesion(String user, String clave){
        if(getCuenta().getUsuario()== user && getCuenta().getClave()== clave){
             System.out.println("Bienvenido a su Cuenta");
             setInicioSesion(true);
        }else{
            getCuenta().setIntentos())+getCuenta().getIntentos())>3);
            System.out.println("Ha superado el n√∫mero de intentos: " + getIntentos());
            bloquearCuenta();
        }
    }
}