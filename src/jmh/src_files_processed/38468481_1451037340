public class ArrayTest
{
    public double[] tal;    

    public ArrayTest()
    {
        tal = new double[] { 3.4 , 5.2 , 0.0 , 12.4 , 7.2 };
    }

    public double sum(double[] xs) {
        double sum = 0;
        for (double tal : xs) {
            sum = sum + tal;
        }
        return sum;
    }

    public double product(double[] xs) {
        double product = 1;
        for (double tal : xs) {
            product = product * tal;
        }
        return product;
    }

    public double max (double[] xs) {
        double max = 0;
        for (double tal : xs) {
            if (max < tal) {max = tal;};
        }
        return max;
    }
    
    public double average(double[] xs) {
        double average = sum()/xs.size;
        return average
    }
}