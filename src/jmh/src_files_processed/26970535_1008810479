	
import java.util.*; 
class Massiv8{ 
public static void main(String[] args){ 
Scanner scan = new Scanner(System.in); 
System.out.print("Введите длину начального массива: "); 
int n = scan.nextInt(); 
int a[] = new int[n]; 
System.out.print("Начальный массив:"+"\n"); 
int sum=0; 
int sa=0; 
for (int i=0; i<a.length; i++){ 
a[i]=(int)(Math.random()*41)-20; 
System.out.print(a[i]+ " "); } 
for (int j = 0; j < a.length; j++) { 
sum += a[j]; 
} System.out.println("\nСумма всех элементов массива:"+sum); 
sa=sum/a.length; 
System.out.println("\nСреднее арифметическое:"+sa); 
System.out.println("\nЧисла большие за среднее армифметическое:"); 
int s=0;
for(int k=0; k<a.length;k++) 
if(a[k]>sa){ System.out.print(" "+a[k]); s++;} 
System.out.println("\nколичество элементов больших за среднее арифметическое:"+s); 
System.out.println("\nМассив без отрицательных элементов:"); 
for(int i=n-1;i>=0;i--){ 
if(a[i]>0){ 
{System.out.print(" "+a[i]);} 
}} 
for (int j = 0; j < a.length/2; j++) { 
if (a[j] < a[j + 1]) { 
int t = a[j]; 
a[j] = a[j + 1]; 
a[j + 1] = t; 
}}}} 
System.out.println("\nМассив с отсортированой первой половиной:"); 
for(int i = 0; i<a.length; i++) 
{ 
if(a[i]>a.length){
System.out.print(a[i]+ " "); } 
}}}