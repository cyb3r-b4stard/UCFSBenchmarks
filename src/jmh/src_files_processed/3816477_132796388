package WS2012_2013;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

/*  
 *  ####### ###-############## ### #### ## ####/####
 *  
 *  ###### ### 
 *    - ####### ### #######, ### ## #### ####### ### ####### ############ ### ########### ########
 *    - ############# ### ###�# ##### ### ##### ##### ### #####�#### ################## ###�� ################
 *    - ###### ### ############## ### ######### (####-#######!)
 */
public class Gui extends JFrame
{
            
    ZeichenPanel zeichenP = new ZeichenPanel();
    BedienPanel bedienP = new BedienPanel(zeichenP);
    
    static JMenuBar bar = new JMenuBar();
    static JMenu datei = new JMenu("Datei");
    static JMenu farbe = new JMenu("Farbe");
    static JMenuItem ende = new JMenuItem("Ende");
    static JMenuItem rot = new JMenuItem("rot");
    static JMenuItem blau = new JMenuItem("blau");
    static JMenuItem gruen = new JMenuItem("gruen");
    
    static MeinListener horcher = new MeinListener();
    
    public static void main(String[]args)
    {
        Gui fenster = new Gui();
        
        datei.add(ende);
        ende.addActionListener(horcher);
        bar.add(datei);
        farbe.add(rot);
        farbe.add(blau);
        farbe.add(gruen);
        bar.add(farbe);
        fenster.setJMenuBar(bar);
    }
    /*  Konstruktor der Klasse Gui
     *  - Aufbau des Fensterinhaltes aus Instanzen der Klassen ZeichenPanel und BedienPanel
     *  - Erzeugen der Men�s und Men�eintr�ge
     */

    public Gui()
    {
        setLayout(new BorderLayout());
        add(bedienP,BorderLayout.SOUTH);
        add(zeichenP,BorderLayout.CENTER);
        setSize(900,800);
        setVisible(true);
    }

    static class MeinListener implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
            if(e.getSource()==ende)
            {
                System.exit(0);
            }
            
            if(e.getSource()==farbe)
            {
                ZeichenPanel.historie;
            }
        }
    }
}