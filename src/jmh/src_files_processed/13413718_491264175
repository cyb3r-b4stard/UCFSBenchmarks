public class BigOfferSale extends AutombileSale implements Displaysales{
    private static double disc,netprice;    
    public BigOfferSale(double disc,double netprice,String id,String company,double price){
        super(id,company,price);
        setData(disc,netprice);
    }
    private void setData( double disc,double netprice ){
        this.disc=disc;
        this.netprice=netprice;

    public double getDisc(){
        
         if(getPrice >= 1500 || getPrice <= 3000 )
            disc= getPrice * .06;
        if(getPrice >= 10000 || getPrice <= 15000 )
            disc= getPrice * .03;
        else if (getPrice <=10000)
            disc= getPrice * .02; 
            return disc;
        
    }
    public double calculateNetprice(){
        netprice+=getPrice - disc;
        return netprice;
    }

    public String toString(){
        return super.toString()
               + "\n discont " + getDisc()
               + "\n net price" + getNetprice()
             
             
    }
    
}