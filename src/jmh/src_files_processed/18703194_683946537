public void rebajarMensualidad(double porcentaje){
    valor = (int) (valor - valor * porcentaje);

}

public int  obtenerHorasDisponibles (int maximo){
    int disponibles;
    disponibles = maximo - horas; 
    return disponibles; 
}

public void aumentarValorMensualidad(int nuevoValor){
    valor = valor + nuevoValor;

}

public void inactivarCliente(){
    estado = false; 
