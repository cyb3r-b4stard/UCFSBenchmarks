public class estudiante
{
    private String rut, nombre, apellido, direccion, fecha nacimiento;
    private int peso; 
    private char sexo; 
    private double estatura; 
    
    public Cliente (){
        rut = "";
        nombre = "";
        apellido = "";
        peso = 0;
        estatura = 0;
        direccion = "";
        estado = false;
        fechanacieminto = ""; 
        sexo = 'F';
        
}

public Cliente (String nombre, String apellido, String rut, String fechanacimiento , String direccion, char sexo, double estatura, int peso){
    this.rut = rut; 
    this.nombre = nombre;
    this.apellido = apellido; 
    this.peso = peso; 
    this.estatura = estatura; 
    this.direccion = direccion; 
    this.fechanacimiento = fechanacimiento; 
    this.sexo = sexo; 
}

    public String getRut(){
        return rut; 
}
 public String getNombre(){
        return nombre; 
}
 public String getApellido(){
        return apellido; 
}
 public int getPeso(){
        return peso; 
}
 public double getEstatura(){
        return estatura; 
}
 public String getDireccion(){
        return direccion; 
}
 public String getFechanaciento(){
        return fechanacimiento; 
}
 public char getSexo(){
        return sexo; 
}

