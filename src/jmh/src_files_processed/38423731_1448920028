import java.util;
public class AreaOfTriangle
{
    public static void main (String[]args)
    {
        Scanner reader = new Scanner (System.in);
        double a, b, c, s, area;
        
        String un = "";
        
        System.out.println("Hello sir. What is your name?");
         un = reader.nextline();
        
        System.out.println("Hello " + un + " How are you?. This prgram will calculate the area of a triangle.");
        
        System.out.println("What is the length of your largest side?");
        a = reader.nextDouble(); 
        System.out.println(" What is the length of your second largest side?");
        b = reader.nextDouble(); 
        System.out.println(" What is the length of your smallest side?");
        c = reader.nextDouble();
        s = (.5)*(a + b + c);
        area = Math.sqrt(s*(s-a)(s-b)(s-c));
        System.out.println(" is " + area);
        
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public int sampleMethod(int y)
    {
        return x + y;
    }
}