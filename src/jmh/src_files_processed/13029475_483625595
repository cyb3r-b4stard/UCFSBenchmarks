package facturacion.baseDeDatos;
import static java.lang.System.*;
import utiles.*;


/**
 * #### ##### ########## ## ########### ## ## #########.
 * 
 * @###### (######## ######### #####) 
 * @####### (##/##/####)
 */
public class Proveedor extends Persona
{
    private String nacionalidad;
    private boolean esMultinacional;
    private String codigoProveedor;
    /**
     * Constructor para objetos de la clase Proveedor
     * <br /> Asigna parametros por defecto
     */
    public Proveedor()
    {
this
    }
    
    /**
     * Constructor para objetos de la clase Proveedor
     * @param nacionalidad
     * @para esMultinaional
     * @param codigoProveedor
     */
    public Proveedor(String nombre, String apellido, String rut, int edad, String direccion, 
    String profesion, int cantidadDeHijos, String lugarDeTrabajo, int antiguedadLaboral,String nacionalidad, boolean esMlutinacional, String codigoProveedor)
    {
        super(nombre,apellido,rut,edad,direccion,profesion,cantidadDeHijos,lugarDeTrabajo,antiguedadLaboral);
        setNacionalidad(nacionalidad);
        setEsMultinacional(esMultinacional);
        setCodigoProveedor(codigoProveedor);
    }
    
    /**
     * Método accesador para el atributo nacionalidad
     * @return nacionalidad
     */
    public String getNacionalidad()
    {
        return nacionalidad;
    }
    
    /**
     * Método accesador para el atributo esMultinacional
     * @return esMultinacional
     */
    public boolean getEsMultinacional()
    {
        return esMultinacional;
    }
    
    /**
     * Método accesador del atributo esMultinacional
     * <br/>Interpreta su contenido entregando un string
     * @return esMultinacional
     */
    public String isEsMultinacional()
    {
        return esMultinacional ? "Si es Multinacional":"No es Multinacional";
    }
    
    /**
     * Método accesador para el atributo codigoProveedor
     * @return codigoProveedor
     */
    public String getCodigoProveedor()
    {
        return codigoProveedor;
    }
    
    /**
     * Método mutador para el atributo nacionalidad
     * @param nacionalidad
     */
    public void setNacionalidad(String nacionalidad)
    {
        this.nacionalidad = nacionalidad;
    }
    
    /*
     * Método mutador para el atributo esMultinacional
     */
    private void setEsMultinacional(boolean esMultinacional)
    {
        this.esMultinacional = esMultinacional;
    }
    
    /**
     * Método mutador para el atributo esMultinacional
     */
    public void isEsmultinacional()
    {
        this.esMultinacional =! this.esMultinacional;
    }
    
    /**
     * Método mutador para el atributo codigoProveedor
     * @param codigoProveedor
     */
    public void setCodigoProveedor(String codigoProveedor)
    {
        if(codigoProveedor.trim().length()==5)
        {
            this.codigoProveedor = codigoProveedor;
        }
        else
        {
            out.println("El valor ingresado no debe superar los 5 caracteres");
        }
    }
    
    /**
     * Método de impresion de la clase Proveedor
     */
    public void printProveedor()
    {
        printPersona();
        out.println("Nacionalidad: " +getNacionalidad());
        out.println("Multinacional: " +isEsMultinacional());
        out.println("Código Proveedor: " +getCodigoProveedor());        
    }
    
    
}
    