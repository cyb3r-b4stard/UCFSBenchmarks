 */
public class Zahlen
{
    int [] simulation = new int[100];
    public int i;
    public int anzahl=0;
    
    public int  pZahl;
    /**
     * Konstruktor f√ºr Objekte der Klasse Zahlen
     */
    public Zahlen()
    {
        for(int i = 0; i < 100; i++)
        {
            simulation[i] = (int)(Math.random()*6 + 1 );
            System.out.println("Wurf " + (i+1) + " ergab " + simulation[i] +".");
        }
        }
    
    public int suchen(pZahl){
        for(int i = 0; i < 100; i++)
        {
            if(i=pZahl){ 
             anzahl=anzahl+1
            
        }
        }
        return anzahl;
    }
}
    
