
import java.util.Scanner;
public class Matriz
{
    public static int[][] LeerMatriz(){
    int matriz[][],i,j,n,m,s=0;
            Scanner x1 =new Scanner(System.in);         
            System.out.println("ingrese el número de filas:");
            n=x1.nextInt();
            System.out.println("ingrese el número de columnas:");
            m=x1.nextInt();
