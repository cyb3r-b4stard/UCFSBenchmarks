
public class VOLLKREIS
{
    private int xMitte;
    private int yMitte;
    private int radius;
    private int farbNr;
    
    public VOLLKREIS()
    {
        xMitte= 300;
        yMitte= 10;
        radius= 10;
        farbNr= 10;
        
    }
        
    public VOLLKREIS(int xMitteStart, int yMitteStart, int radiusStart, int farbNrStart)
    {
        xMitte=xMitteStart;
        yMitte=yMitteStart;
        radius=radiusStart;
        farbNr=farbNrStart;
        
    }
    
    public void setzeXMitte(int xMitteNeu)
    {
        xMitte=xMitteNeu;
    } 
    
    public void setzeYMitte(int yMitteNeu)
    {
        yMitte=yMitteNeu;
    }
    
    public void setzeRadius(int radiusNeu)
    {
        radius=radiusNeu;
    }
    
    public void setzeFarbNr(int farbNrNeu)
    {
        farbNr=farbNrNeu;
    }
    
    public int gibXMitte()
    {
        return xMitte;
    } 
    
    public int gibYMitte()
    {
        return yMitte;
    }
    
    public int gibRadius()
    {
        return radius;
    }
    
    public int gibFarbNr()
    { 
        return farbNr;
    }
    
    public void verschiebe( int horizontal, int vertikal)
    {
        xMitte=xMitte+horizontal;
        yMitte=yMitte+vertikal;
    }
    public double berechneUmfang()
    {
        return 2 * radius *3.14;
    }
    
    public double berechneFlaeche()
    {
        return radius*radius* 3.14;
    }
    
    public void zeichne()
    {
        ZEICHENFENSTER.gibFenster().fuelleKreis(xMitte,yMitte , radius, farbNr);
    }
    
    public void musterZeichnen()
    {
        this.zeichne();
        for(int i = 0; i<30;i++)
        {
            this.setzeFarbNr(i%9);
            this.verschiebe(10,10);
            this.zeichne();
        }
    }
   public void chinesemitStrohhut()
   {
       this.zeichne();
        for(int i = 0; i<20;i++)
        {
            this.verschiebe(-10,10);
            this.zeichne();
            ZEICHENFENSTER.warte(250)        
        }
        for (int j = 0; j <20;j++)
        {
            this.verschiebe(10,10);
            this.zeichne();

        }
        for (int k = 0;k <40;k++)
        {this.verschiebe(-10,0);
         this.zeichne();  
        }
}}
      

