public class Menu {
    
    Walker walkerObject1 = new Walker ("Daniel Campbell", 0, "Full Time");
    Walker walkerObject2 = new Walker ("Eva Gibson", 0, "Full Time");
    Walker walkerObject3 = new Walker ("Nicholas Cooke", 0, "Full Time");
    Walker walkerObject4 = new Walker ("Brenda Monoply", 0, "Part Time");
    
    private Scanner input = new Scanner (System.in);
    private int addhours,finalhours, remaininghours;
    
    public static void main (String[] args) {
        Menu start = new Menu ();
            while (true)
                start.displayMenu();
    }
    
    public Menu () {
        
    }
    
    public void displayMenu () {
        System.out.println("What would you like to do?");
        System.out.printf("1) Book a Walker\n" +
                          "2) Display Walkers\n" +
                          "3) Exit System");
                          
        int selection = input.nextInt();
        input.nextLine();
        
        switch (selection) {
            case 1:
                this.displayBookWalker();
                break;
            case 2:
                this.displayAllWalkers();
                break;
            case 3:
                this.exitSystem();
                break;
            default:
                System.out.println("Please select an option between 1-3");
        }
    }
    
    public void displayBookWalker() {
        displayMenu: while(true) {
            System.out.println("Which walker would you like to book?");
            System.out.println("1)" + walkerObject1.getName() + "\n" +
                              "2)" + walkerObject2.getName() + "\n" +
                              "3)" + walkerObject3.getName() + "\n" +
                              "4)" + walkerObject4.getName() + "\n" +
                              "5) Back");
                              
                
        int selection = input.nextInt();
        input.nextLine();
        addhours = input.nextInt();
        
        switch (selection) {
            case 1:
                System.out.println("You have selected "  + walkerObject1.getName() + " How many hours would you like to book?");
                System.out.println("Enter here:");
                finalhours = walkerObject1.getSessions() + addhours;
                System.out.println("You have booked " + walkerObject1.getName() + " for " + addhours + " hours. They now have " + this.getRemainingHoursFullTime() + " Remaining";
                break;
            case 2:
                System.out.println("You have selected " + walkerObject2.getName() + "How many hours would you like to book?");
                System.out.println("Enter Here:");
                finalhours = walkerObject2.getSessions() + addhours;
                System.out.println("You have booked " + walkerObject2.getName() + "for " + addhours + " hours. They now have " + this.getRemainingHoursFullTime());
                
                
        }
        }
    }
     
    public int getRemainingHoursFullTime () {
         remaininghours = 30 - addhours;
         
         return (remaininghours);
    }
    
    public void displayHours() {        
       
    }
    
    public void displayAllWalkers() {
    
    }
    
    public void exitSystem() {
    
    }
}