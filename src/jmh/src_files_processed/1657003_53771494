
public class Bus
{
    private boolean linienbus;
    private int anzahlSitzplaetze;
    private String firma;
    private int anzahlSitzplaetzeBesetzt;
    
    public Bus()
    {
        setLinienbus(true);
        setAnzahlSitzplaetze(50);
        setFirma("Max Muster");
        setAnzahlSitzplaetzeBesetzt(0);
    }
    
    public Bus(boolean linienbus, int anzahlSitzplaetze, String firma, int anzahlSitzplaetzeBesetzt)
    {
        setLinienbus(linienbus);
        setAnzahlSitzplaetze(anzahlSitzplaetze);
        setFirma(firma);
        setAnzahlSitzplaetzeBesetzt(anzahlSitzplaetzeBesetzt);
    }
    
    public void setLinienbus(boolean linienbus)
    {
        this.linienbus=linienbus;
    }
    
    public boolean getLinienbus()
    {
        return linienbus;
    }
    
    public void setAnzahlSitzplaetze(int anzahlSitzplaetze)
    {
        this.anzahlSitzplaetze=anzahlSitzplaetze;
    }
    
    public int getAnzahlSitzplaetze()
    {
        return anzahlSitzplaetze;
    }
    
    public void setFirma(String firma)
    {
        this.firma=firma;
    }
    
    public String getFirma()
    {
        return firma;
    }
    
    public void setAnzahlSitzplaetzeBesetzt(int anzahlSitzplaetzeBesetzt)
    {
        if(anzahlSitzplaetzeBesetzt >= 0 && this.anzahlSitzplaetzeBesetzt <= anzahlSitzplaetze)
        {
            this.anzahlSitzplaetzeBesetzt=anzahlSitzplaetzeBesetzt;
        }
        else
        {
            if(this.anzahlSitzplaetzeBesetzt <=0)
            {
                System.err.println("Falscher Wert fÃ¼r anzahlSitzplaetzeBesetzt");
                anzahlSitzplaetzeBesetzt=0;
            }
            else
            {
                this.anzahlSitzplaetzeBesetzt=anzahlSitzplaetze;
            }
        }
    }
    
    public int getAnzahlSitzplaetzeBesetzt()
    {
        return anzahlSitzplaetzeBesetzt;
    }
    
    public void print()
    {
       System.out.println("Bus");
       if (linienbus == true)
       {
           System.out.println("Es ist ein Linienbus");
        }
        else
        {
            System.out.println("Es ist kein Linienbus")
        }
        System.out.println("Anzahl der Sitzplaetze:" +getAnzahlSitzplaetze);
        System.out.println("Firma:"+getFirma);
        System.out.println("Anzahl der besetzten Sitzplaetze:"+getAnzahlBesetzteSitzplaetze);
    }
    }
  