import java.util.*;
public class MatesInterface
{
    private void run()
    {
        Scanner console = new Scanner(System.in);
        int menuSelection;
        String productName = " ", choice;
        int demandRate = 0;
        int weeks, numOfProducts = 0;
        double setupCost = 0;
        double unitCost = 0;
        double inventoryCost = 0;
        double sellingPrice = 0;
        int correct;
        Store store = new Store();
        Product product1 = null;
        Product product2 = null;
        Product product3 = null;
        
       do     
       {
          {
            System.out.println("Welcome to Mates coffee! Please select an option.");
            System.out.println("\nPress 1 to input data for a new product.");
            System.out.println("\nPress 2 to show the data for an existing product.");
            System.out.println("\nPress 3 to show the replenishment strategy for a specific product.");
            System.out.println("\nPress 4 to exit the program.");
        
            menuSelection = console.nextInt();  
            switch (menuSelection) 
            {
                case 1: 
                System.out.println("Please input details of the new product.");
                System.out.println("Product Name: "); 
                Scanner console = new Scanner(System in);
                productName = console.nextLine();
                productName = productName.toLowerCase();
                do
                {
                    if (productName.length() >= 3 && productName.length() <= 10)
                    {
                        correct = 1;
                    }
                    
                    else
                    {
                        System.out.println("Invalid input, please enter a number between 3 and 10.");
                        correct = 0;
                    }
                }
                while(correct == 1);
               
                do
                {
                    correct = 0;
                    System.out.println("Demand Rate: ");
                    demandRate = console.nextInt();
                    if (demandRate > 0)
                    {
                        correct = 1;
                    }
                    
                    else
                    {
                        System.out.println("Invalid input, please enter a number greater than zero.");
                    }
                }
                
                while (correct != 0);
                    
                do
                {
                    correct = 0;
                    System.out.println("Setup Cost: ");
                    setupCost = console.nextDouble();
                    if (setupCost > 0)
                    {
                        correct = 1;
                    }
                    
                    else
                    {
                        System.out.println("Invalid input, please enter a number greater than zero.");
                    }
                }
                
                while (correct != 0);
                       
                do
                {
                    correct = 0;
                    System.out.println("Unit Cost: ");
                    unitCost = console.nextDouble();
                    if (unitCost > 0)
                    {
                        correct = 1;
                    }
                    
                    else
                    {
                        System.out.println("Invalid input, please enter a number greater than zero.");
                    }
                }
                
                while (correct != 0);
            
                do
                {
                    correct = 0;
                    System.out.println("Inventory Cost: ");
                    inventoryCost = console.nextDouble();
                    if (inventoryCost > 0)
                    {
                        correct = 1;
                    }
                    
                    else
                    {
                        System.out.println("Invalid input, please enter a number greater than zero.");
                    }
                }
                
                while (correct != 0);
                
                do
                {
                    correct = 0;
                    System.out.println("Selling Price: ");
                    sellingPrice = console.nextDouble();
                    if (sellingPrice > 0)
                    {
                        correct = 1;
                    }
                    
                    else
                    {
                        System.out.println("Invalid input, please enter a number greater than zero.");
                    }
                }
                
                while (correct != 0);
                
                  break;
        
                case 2:
                    System.out.println("What product would you like to show the data for?");
                    System.out.println("Product Name: ");
                    productName = console.nextLine();
                    
                    if (productName == store.product1.getProductName())
                    {
                        System.out.print(store.printProduct(product1.getProductName()));
                    }
                    
                    else if (productName == store.product2.getProductName())
                    {
                        System.out.print(store.printProduct(product2.getProductName()));
                    }
                    
                    else if (productName == store.product3.getProductName())
                    {
                        System.out.print(store.printProduct(product3.getProductName()));
                    }
                    
                    else
                    {
                        System.out.println("Invalid input. Your chosen product is not in the system.");
                    }
                    
                  break;
          
                case 3:
                System.out.println("Please enter the name of a product: ");                   
                    choice = console.nextLine();
                    if (choice == product1.getProductName())
                    {
                        System.out.println("Please enter the number of weeks: ");
                        weeks = console.nextInt();
                        System.out.println("The replenishment strategy is: ");
                        double replenishment = (double) ((2 * demandRate * setupCost)/inventoryCost);
                        double squareRoot = (double) Math.sqrt(replenishment);
                        int quantity = (int) (squareRoot + 0.5f);
                        System.out.print("Quantity of the product: " + quantity);
                        int inventory = (quantity - demandRate);
                        System.out.println("Week + \t + Quantity + \t + Demand + \t + Inventory");
                    }
                    
                    
                
                    
                  break;
          
                case 4:
                    System.out.println("Program exiting.");
                  break;
                
                default:
                    System.out.print("Your selection was not valid. Please select a valid number from the menu list.");
                  break;
                  
             }
          }
       } 
       while (menuSelection != 4);
    }
    
    public static void main(String[] args)
    {
        MatesInterface intFace = new MatesInterface();
        intFace.run();
    }
}