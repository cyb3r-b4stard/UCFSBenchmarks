

pubic class Obdlnik
{
   
    private int dlzka;
    private int sirka;
/*
public Obdlnik (int dlzka, int sirka)
{
this.dlzka = dlzka;
this.sirka = sirka;
}
*/
public Obdlnik(int nasaDlzka, int nasaSirka)
{
    dlzka = nasaDlzka;
    sirka = nasaSirka;
}    
public Obdlnik(int rozmer)
{
    this(rozmer,rozmer);
}
public Obdlnik()
{
    this(100,200);
} 
public int zistiObsah()
{
int pom;
pom = dlzka * sirka;
return pom;
}
public int zistiObvod()
{
    return 2 * dlzka + 2 * sirka
}
}
