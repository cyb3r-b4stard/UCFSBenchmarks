import java.util.Scanner;           

public class VoidMethods
{
    public static void main(String[] args)
    {
        int array1[] = {23,43,12,45,75,32,12};
        int array2[] = {34,54,23,34,98,45,76,98,42,48,61,44};
        int array3[] = {78,65,92,45,78,12,10,45,62};
        int print;

        printArray(array1);
        System.out.println();
        printLargest(array1);
        System.out.println();
        printArray(array2);
        System.out.println();
        printLargest(array2);
        System.out.println();
        printArray(array3);
        System.out.println();
        printLargest(array3);
        System.out.println();
        
        System.out.println();
        
        printArray(array1);
        System.out.println();        
        printAllEvens(array1);
        System.out.println();
