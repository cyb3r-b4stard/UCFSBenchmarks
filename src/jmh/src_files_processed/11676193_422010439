    public static void printArray(int[] myarray)
    {
        System.out.print("Array: ");
        for(int idx = 0; idx <= myarray.length-1; idx++)
            System.out.print(myarray[idx]+" ");
    }
    public static void printLargest(int[] myarray)
    {
        int maxValue = myarray[0];
        int maxidx = 0;
            for(int idx = 1; idx <= myarray.length-1; idx++)
        {
            if(maxValue < myarray[idx])
            {
                maxValue = myarray[idx];
                maxidx = idx;
            }
        }
        System.out.print("Largest element: " + maxValue);
    }
    public static void printAllEvens(int[] myarray)
    {
        System.out.print("Even numbers: ");
        for(int idx = 0; idx <= myarray.length-1; idx++)
        {
            if(myarray[idx]%2==0)
            {
                System.out.print(myarray[idx] + " ");
            }
        }
    }
    public static void printSum(int[] myarray)
    {
        int sum=0;
        double avg;
        for(int idx = 0; idx <= myarray.length-1; idx++)
        {
            sum += myarray[idx];
        }
        System.out.print("Sum: " + sum);
    }
    public static void searchArray(int[] myarray, num)
    {
        for(int idx = 0; idx <= myarray.length-1; idx++)
        {
            if(myarray[idx] == num)
            {
                
            }
            else
            {
                
            }
        }
    }
}