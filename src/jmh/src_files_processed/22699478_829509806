import java.awt.*;
import javax.swing.*;

/**
 * ##### # ########### ## ##### ########### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */


public class ButtonFrame extends JFrame
{
   JButton bChange;
   
   ButtonFrame( String title )
   {
       super( title );
       setLayout( new FlowLayout() );
       
       bChange = new JButton( "Klick mich!" );
       add( bChange );
       
       set DefaultCloseOperation( JFrame.EXIT-ON-CLOSE ); 
   }
   
}