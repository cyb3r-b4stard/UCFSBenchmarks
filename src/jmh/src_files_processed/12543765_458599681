 */
public class Game21
{
    public static void main (String[]args) 
    {
        Scanner input= new Scanner(System.in); 
        char choice=0; 
        Deck d1= new Deck(); 
        Deck d2= new Deck(); 
        int total=0; 
         
        System.out.println("Welcome to BlackJack! Here are your two cards:");
        d1.shuffle(); 
        System.out.println(d1.getTopCard()); 
        d2.shuffle(); 
        System.out.println(d2.getTopCard()); 
        
        total=d1.getTopCard()+d2.getTopCard(); 
        if(total == 21)
        {
            System.out.println("YOU WIN!"); 
        }
        else if (total > 21)
        {
            System.out.println("YOU LOSE"); 
        }
        else
        {
            System.out.println("Deal another card?"); 
            choice=input.nextLine().charAt(0);
            while(choice== 'y')
            {
            
             
            d1.shuffle(); 
            System.out.println(d1.getTopCard()); 
            total+=d1.getTopCard(); 
            System.out.println("Deal another?") 
            choice=input.nextLine().charAt(0); 
           }
        }  
          
       
        System.out.println("your total is" + total); 
        if(total == 21)
        {
            System.out.println("YOU WIN!"); 
        }
        else if (total > 21)
        {
            System.out.println("YOU LOSE"); 
        }
        
        d1.shuffle(); 
        d2.shuffle(); 
        System.out.println("Computers turn! Computers cards are:"); 
        System.out.println("d1.getTopCard()"); 
        System.out.println("d2.getTopCard()"); 
        int compTot= d1.getTopCard() + d2.getTopCard(); 
        
        if (compTot >= 17) 
        {
            System.out.println(compTot); 
                if (compTot == 21)
                {
                    System.out.println("COMP WINS"); 
                }
                if(compTot > 21)
                {
                    System.out.println("COMP LOSES"); 
                }
        }
        else 
        {
            d1.shuffle(); 
            compTot+=d1.getTopCard();
                 if (compTot == 21)
                {
                    System.out.println("COMP WINS" + compTot); 
                }
                if(compTot > 21)
                {
                    System.out.println("COMP LOSES" + compTot); 
                }
                else
                {
                     d1.shuffle(); 
                     compTot+=d1.getTopCard();
                     System.out.println(compTot); 
                 }
    }
    
    
}
}