import java.awt.event.*;
public class GestionAction implements ActionListener 
{    
    private int n;
    static int nombreDeChiffre =0;
    private Affichage ecran;
    
   public GestionAction (int n, Affichage ecran) {
     this.n = n;
     this.ecran = ecran;
   }
  
     public void actionPerformed(ActionEvent e) {
      
      switch (n) {
            case 0 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("1");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("1");
            }else {
                ecran.setText(ecran.getText()+"1");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("1");
            }
            break;
            case 1 : 
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("2");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("2");
            }else {
                ecran.setText(ecran.getText()+"2");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("2");
            }
            break;
            case 2 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("3");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("3");
            }else {
                ecran.setText(ecran.getText()+"3");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("3");
            }
            break;
            case 3 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("4");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("4");
            }else {
                ecran.setText(ecran.getText()+"4");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("4");
            }
            break;
            case 4 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("5");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("5");
            }else {
                ecran.setText(ecran.getText()+"5");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("5");
            }
            break;
            case 5 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("6");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("6");
            }else {
                ecran.setText(ecran.getText()+"6");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("6");
            }
            break;
            case 6 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("7");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("7");
            }else {
                ecran.setText(ecran.getText()+"7");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("7");
            }
            break;
            case 7 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("8");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("8");
            }else {
                ecran.setText(ecran.getText()+"8");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("8");
            }
            break;
            case 8 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("9");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("9");
            }else {
                ecran.setText(ecran.getText()+"9");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("9");
            }
            break;
            case 9 :
            if (ecran.nombreDeChiffre() == 0) {
                ecran.setText("0");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("0");
            }else {
                ecran.setText(ecran.getText()+"0");
                ecran.nombreDeChiffrePlus();
                ecran.addToStringUn("0");
            }
            break;
            case 10 : ecran.reset();break;
            case 11 :
            if(!ecran.boolPoint()) {
                if (ecran.nombreDeChiffre() == 0) {
                    ecran.setText("0.");
                    ecran.nombreDeChiffrePlus();
                    ecran.boolPointVrai();
                    ecran.addToStringUn("0.");
                }else {
                    ecran.setText(ecran.getText()+".");
                    ecran.boolPointVrai();
                    ecran.nombreDeChiffrePlus();
                    ecran.addToStringUn(".");
                }
            }
            break;
            case 12 :
            if (ecran.nombreDeChiffre() > 0 && !ecran.deuxiemeOperateurTest() ) {
                ecran.setText(ecran.getText()+"+");
                ecran.clicPlusVrai();
                ecran.deuxiemeOperateurVrai();
                }else if (ecran.deuxiemeOperateurTest()) {
                ecran.calcul();
                ecran.setText(ecran.getText()+"+");
                ecran.clicPlusVrai();
                ecran.deuxiemeOperateurVrai();
                }
            break;
            case 13 :
            if (ecran.nombreDeChiffre() > 0 && !ecran.deuxiemeOperateurTest() ) {
                ecran.setText(ecran.getText()+"-");
                ecran.clicMoinsVrai();
                ecran.deuxiemeOperateurVrai();
                }else if (ecran.deuxiemeOperateurTest()) {
                ecran.calcul();
                ecran.setText(ecran.getText()+"-");
                ecran.clicMoinsVrai();
                ecran.deuxiemeOperateurVrai();
                }
            break;
            case 14 :
            if (ecran.nombreDeChiffre() > 0 && !ecran.deuxiemeOperateurTest() ) {
                ecran.setText(ecran.getText()+"*");
                ecran.clicFoisVrai();
                ecran.deuxiemeOperateurVrai();
                }else if (ecran.deuxiemeOperateurTest()) {
                ecran.calcul();
                ecran.setText(ecran.getText()+"*");
                ecran.clicFoisVrai();
                ecran.deuxiemeOperateurVrai();
                }
            break;
            case 15 :
            if (ecran.nombreDeChiffre()>0&&!ecran.deuxiemeOperateurTest()&&ecran.StringUnTest()!='.') !=0&&ecran.StringUnTest()!='+') {
                
                ecran.setText(ecran.getText()+"/");
                ecran.clicDiviseVrai();
                ecran.deuxiemeOperateurVrai();
                }else if (ecran.deuxiemeOperateurTest()) {
                ecran.calcul();
                ecran.setText(ecran.getText()+"/");
                ecran.clicDiviseVrai();
                ecran.deuxiemeOperateurVrai();
                
            }
            break;
            case 16 : break;
      } 
    }
}