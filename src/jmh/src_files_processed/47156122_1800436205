
class Nested_If
{
    public static void main(String [] args){
        char num1,num2;
        System.out.println("if you practise sports plz enter 1 if you dont plz enter 2");
        num1=Keyboard.readChar();
        if(num1==1){
            System.out.println("If you practice Basketball hit 1, if you practice football hit 2, other sports? If so hit yes")
            num2=Keyboard.readChar();
            if(num2==1){
                System.out.println("you practice basketball");
            }
            else if(num2==2){
                System.out.println("you train football");
            }
            else{
            System.out.println("you practice sport but not basketball or football");
            }
        }            
    }
}