
/**
 * ###### ###### ####### ## #####(#### #####,##########..)
 * 
 * @###### ##### 
 * @####### ##/##/####
 */
public class Person{
    public final static boolean FEMALE_VALUE=true;
    public final static boolean MALE_VALUE=false;
    public final static int AGE_MAX_VALUE=118;
    public final static int AGE_MIN_VALUE=0;
    public final static int ADULTHOOD_AGE=18;
    public final static int RETIREMENT_AGE=63;
    int age; 
    String name="Maria"; 
    String surname; 
    boolean gender; 

    /*
     *Constructor for objects of class Person
     */
    /**
     * Default constructor
     */
    public Person()
    {
        setName("");
        setSurname("");
        System.out.println("Default constructor invoked");
    }

    /**
     * Constructor based on initial name and surname
     * @param name String containing the name of the user
     * @param surname String containing the surname of the user
     */
    public Person(String name, String surname)
    {
        this();
        setName(name);
        setSurname(surname);
        System.out.println("Name/Surname constructor invoked");
    }

    public Person(String name, String surname, int age)
    {
        this(name, surname);
        setAge(age);
        System.out.println("Name/Surname/Int Age constructor invoked");
    }

    /**
     * @param This is the name of the user
     */

    public void setName (String name)
    { this.name= name;
    }

    /**
     * This is the name of the person
     * @return This is the name of the person
     */

    public String getName()
    {return name.toUpperCase();
    }

    /**
     * @param This is the surname of the person
     */

    public void setSurname (String surname)
    {this.surname= surname;
    }

    /**
     * This is the surname of the person
     * @return This is the surname of the person
     */

    public String getSurname()
    {

        return surname.toUpperCase();
    } 

    /**
     * @param Represents the age of the user.Allowed values in the specific range
     * This is the age of the person
     */

    public void setAge(int age)
    {
        if (age >= 0 && age <= AGE_MAX_VALUE)
            this.age=age;
        else 
            System.out.println("An age value of" + age + "is not allowed");

        /**
         * MAX_AGE_VAUE is a variable that can determinate if the age is the age permited 
         */

    }

    /**
     * This is the age of the person
     * @return This is the age of the person
     */

    public int getAge()
    {return age;
    } 

    public int getCriticalAge(){
       if(age < ADULTHOOD_AGE)
        if(age < ADULTHOOD_AGE)
         ADULTHOOD_AGE-getAge();
        else 
         RETIREMENT_AGE-getAge();
       else
       RETIREMENT_AGE-getAge()
       
      }


    
    /**
     * This identificates the gender of the user with boolean
     * a false means 'male' and a true value means 'female'
     */

    public void setGender(boolean gender)
    {this.gender=gender;
    } 

    /**
     * This identificates the gender
     * changes the value of 'gender' property
     * @return This identificates the gender 
     */

    public boolean getGender()
    {return gender;
    }

    /**
     * Write things on the screen
     */

    public void print()
    {System.out.println("Hello World");
        System.out.println("one" + "two");
        System.out.println("Hello my age is" + 25);
        System.out.println("Hello my age is" + (25+64));
        System.out.println("NAME: " + getSurname() + " " + name + "AGE: " + getAge()+ " " + "GENDER: ");
        System.out.println (toString());
        if(gender == FEMALE_VALUE)
            System.out.println("FEMALE");
        else
            System.out.println("MALE");

    }   

    /**
     * Stores the value of every property in the class im to String
     * 
     * @returns String containing 
     */
    public String toString()
    { 
        String aux  = ("NAME: " + getSurname() + " " + getName() + " " + "GENDER: " + getGender() + " " + "AGE: " + getAge());

        if (gender == MALE_VALUE)
            aux += "MALE";
        else
            aux += "FEMALE";

        return aux;

    }

} 