import java.util.*;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
class Gtrapezio extends JFrame
{
    private Container sfondo;
    private JTextField tf1;
    private JTextField tf2;
    private JTextField tf3;
    private JTextField tf4;
    private JTextField tf5;
    private JButton pulsante1;
    private JButton pulsante2;
    private JButton pulsante3;
    private JLabel etichetta1;
    private JLabel etichetta2;
    private JLabel etichetta3;
    private JLabel etichetta4;
    private JLabel etichetta5;
        
    public Gtrapezio()
    {
        sfondo=getContentPane();
        
        JPanel pannello= new JPanel();
        sfondo.add(pannello);
        
        JPanel pannello1=new JPanel();
        etichetta1=new JLabel("Inserisci base maggiore");
        etichetta2=new JLabel("Inserisci base minore");
        etichetta3=new JLabel("Inserisci l'altezza");
        pulsante1=new JButton("Calcola perimetro");
        pulsante2=new JButton("Calcola area");
        tf1= new JTextField(20);     
        tf2= new JTextField(20);
        tf3= new JTextField(20);
        pannello1.add(etichetta1);
        pannello1.add(tf1);
        pannello1.add(etichetta2);
        pannello1.add(tf2);
        pannello1.add(etichetta3);
        pannello1.add(tf3);
        pannello1.setLayout(new FlowLayout(FlowLayout.LEFT));
        pannello1.add(pulsante1);
        pannello1.add(pulsante2);

        JPanel pannello2=new JPanel();
        etichetta3=new JLabel("Perimetro");
        etichetta4=new JLabel("Area");
        tf1= new JTextField(20);
        tf2= new JTextField(20);       
        pannello2.setLayout(new GridLayout(2,2));
        
        JPanel pannello3=new JPanel();
        pulsante3=new JButton("Cancella");
        
        
        
        
        pulsante1.addActionListener(new GestorePulsanti());
        pulsante2.addActionListener(new GestorePulsanti());
        pulsante3.addActionListener(new GestorePulsanti());
        
        pack();
        setVisible(true);
    }
    
    class GestorePulsanti implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
            double basemax;
            double basemin;
            double altezza;
            
            
            basemax= Double.parseDouble(tf1.getText());
            basemin= Double.parseDouble(tf2.getText());
            altezza= Double.parseDouble(tf3.getText());
            
            Trapezio t=new Trapezio();
            try{
                if(e.getActionCommand().equals("Calcola perimetro"))
                {
                    basemax=t.setBasemax();
                }
            }
            catch{
            
              tf1.setText("");
              tf2.setText(""); 
              tf3.setText(""); 
              tf4.setText(""); 
              tf5.setText(""); 
            }
        }
    }
}
