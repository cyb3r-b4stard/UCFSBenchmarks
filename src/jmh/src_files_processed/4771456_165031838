public class Zeichnung
{
    private LKW lkw;
      private Leinwand leinwand;
    

   public Zeichnung()
   {
       leinwand = Leinwand.gibLeinwand();
       leinwand.loeschen();
       lkw = new LKW();
       
   }
    
    public void zeichnen()
    {
        lkw.zeichnen();
        leinwand.erneutZeichnen();
    }

  public void loeschen()
  {
      lkw.loeschen();
      leinwand.erneutZeichnen();
    }
    
    public void versetzen(int geschwindigkeit, int runde)
    {
      
        for (int i=1; i<runde; i++)
        { do{lkw.versetzen(geschwindigkeit,0);
            leinwand.erneutZeichnen();
            leinwand.warte(10);
       
      
    }
    
      


}


