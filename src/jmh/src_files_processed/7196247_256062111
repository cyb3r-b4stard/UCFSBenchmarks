
/**
 * ##### # ########### ## ##### ################ ####.
 * 
 * @###### (###### ###) 
 * @####### (### ###, ####)
 */
public class SalaryCalculator
{
  public double calculateSalaryForHourlyWorker(double hoursWorked, double hourlySalary, double hourlyRate)
    
        {
            double biWeeklySalary; 
            {
                
                    if(hoursWorked <= 80.0)
                        biWeeklySalary = hoursWorked * hourlyRate;
                    else if(hoursWorked > 80.0 && hoursWorked <= 120.0)
                        biWeeklySalary = 80.0 * hourlyRate + (hoursWorked - 80) * hourlyRate * 1.5;
                    else if(hoursWorked > 120.0)
                        biWeeklySalary = 80.0 * hourlyRate;
           
                        return biWeeklySalary;
            }       
  public double calculateSalaryForSalariedWorker(double annualSalary)
    
        {
            double biWeeklySalary; 
            
                biWeeklySalary = annualSalary / 26.0;
                return biWeeklySalary;
        }        
}