public class c169
{
  public static void main(String[] args)
        { 
            
             String [] students = {"1,John,Smith,John1989@gmail.com,20,88,79,59", 
             "2,Suzan,Erickson,Erickson_1990@gmailcom,19,91,72,85",
             "3,Jack,Napoli,The_lawyer99yahoo.com,19,85,84,87",
             "4,Erin,Black,Erin.black@comcast.net,22,91,98,82",
             "5,Timothy,Johnston,bearjohnston2015@gmail.com,30,85,95,96"};
             
             Roster roster = new Roster();
             
             for(int i = 0; i < students.length; i++)
             {
                 String [] studentBlock = students[i].split(",");
                 Roster.add(studentBlock[0],studentBlock[1],studentBlock[2],studentBlock[3],Integer.parseInt(studentBlock[4]),Integer.parseInt(studentBlock[5]),Integer.parseInt(studentBlock[6]),Integer.parseInt(studentBlock[7]));
                   
                } 
             
              Roster.print_all();
              Roster.print_invalid_emails();
              for(int i = 0;i < roster.studentRoster.size();i++)
		{
			  Roster.print_average_grade(Integer.toString(i+1));
		}
              Roster.remove("3");
              Roster.remove("3");
              
              
             
                }


public static class Student
    {
    
    private String stuID;
    private String fName;
    private String lName;
    private String email;   
    private int age;
    private int grade1;
    private int grade2;
    private int grade3;
    private int [3] grades;
    
    
    public Student(String studentID, String studentFirstname, String studentLastname, String emailAddress, int studentAge, int studentGrade1, int studentGrade2, int studentGrade3)
    {
        set_student_id(studentID);
        set_student_firstname(studentFirstname);
        set_student_lastname(studentLastname);
        set_email(emailAddress);
        set_student_age(studentAge);
        set_student_grades(studentGrade1,studentGrade2,studentGrade3);

    }
    
    public void set_student_id(String studentID)
    {
     this.stuID = studentID;
   
    }
    
    public void set_student_firstname(String studentFirstname)
    {
    this.fName = studentFirstname;
    }
    
    public void set_student_lastname(String studentLastname)
    {
    this.lName = studentLastname;
    }
    
    public void set_email(String emailAddress)
    {
    this.email = emailAddress;
    }
    
    public void set_student_age( int studentAge)
    {
    this.age = studentAge;
    }
    
   /* public void set_student_grade1( int studentGrade)
    {
    this.grade1 = studentGrade;
    }
    
    public void set_student_grade2( int studentGrade)
    {
    this.grade2 = studentGrade;
    }
    
     public void set_student_grade3( int studentGrade)
    {
    this.grade3 = studentGrade;
    }*/
    
    public void set_student_grades( int studentGrade1, int studentGrade2, int studentGrade3)
    {
    this.grades[0] = studentGrade1;
    this.grades[1] = studentGrade2;
    this.grades[2] = studentGrade3;
    }
    
    public String get_student_id()
    {    
    return stuID;
    }
       
    public String get_student_firstname()
    {
    return fName;
    }
       
    public String get_student_lastname()
    {
    return lName;
    }
      
    public String get_email()
    {
    return email;
    }
    
    public int get_student_age()
    {
    return age;
    }
    
    public int get_student_grade1()
    {
          return grade1;
    }
    
    public int get_student_grade2()
    {
          return grade2;
    }
 
    public int get_student_grade3()
    {
     return grade3;
    }
   
    public int [] get_student_grades()
    {
          return grades;
    }
    
    public void print()
		{
          System.out.println("\t First Name: " + get_student_firstname() + "\t Last Name: " + get_student_lastname() + "\t Age: " + get_student_age() + "\t Grades: " + get_student_grades());
             
		}
    
   
    /*@Override
