   }*/
 }

public static class Roster
    {
	   public static List<Student> studentRoster = new ArrayList<Student>(); 

	   public static void add(String studentID, String firstname, String lastname, String emailaddress, int age, int grade1, int grade2, int grade3)
   { 
       Student tmpStu = new Student(studentID,firstname,lastname,emailaddress,age,grade1,grade2,grade3);
       studentRoster.add(tmpStu);          
      } 
      
   public static void remove(String studentID){       
       for (int i = 0; i < studentRoster.size(); i++)
          {
              if(Integer.parseInt(studentRoster.get(i).get_student_id()) == Integer.parseInt(studentID)){
                  System.out.print("Student: " + studentRoster.get(i).get_student_firstname() + " " + studentRoster.get(i).get_student_lastname());
                  studentRoster.remove(i);
                  System.out.println(" has been removed.");
                  return;
                }
               else if(i == studentRoster.size() - 1){
                   System.out.println("Error: No such Student ID. Please try again.");
                }
            }
                     
        }
   
    public static void print_all(){
            for (Student i : studentRoster ){
                i.print();                   
        }
            }
            
            public static void print_average_grade(String studentID){
        for (int i = 0; i < studentRoster.size(); i++)
          {
           if(Integer.parseInt(studentRoster.get(i).get_student_id()) == Integer.parseInt(studentID)){  
               System.out.println("\t First Name: " + studentRoster.get(i).get_student_firstname() + "\t Last Name: " + studentRoster.get(i).get_student_lastname() + "\t Grade Average: " + ((studentRoster.get(i).get_student_grade1() + studentRoster.get(i).get_student_grade2() + studentRoster.get(i).get_student_grade3())/3));
                  return;
                }
               else if(i == studentRoster.size() - 1){
                   System.out.println("Error: No such Student ID. Please try again.");
                }
                }
            }
    
     public static void print_invalid_emails(){
         int x = 0;
          for (int i = 0; i < studentRoster.size(); i++)
          {
           if(studentRoster.get(i).get_email().indexOf('@') + 1 == 0 || studentRoster.get(i).get_email().indexOf('.') + 1 == 0 || studentRoster.get(i).get_email().indexOf(' ') + 1 == 0){  
               System.out.println("\t Student ID: " + studentRoster.get(i).get_student_id() + "\t Invalid E-mail: " + studentRoster.get(i).get_email());
                 x++;
                }
               else if(x == 0 && i == studentRoster.size() - 1){
                   System.out.println("All e-mails are correctly formated");
                }
                }
            
    }
	}
}