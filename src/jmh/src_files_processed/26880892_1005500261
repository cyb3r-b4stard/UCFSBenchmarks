
/**
 * ##### # ########### ## ##### ############# ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class TestCandidate
{
    public static void printVotes(Candidate[] Election){
        System.out.println("");
        for(int i = 0; i < Election.length; i++){
            System.out.println(Election[i].toString());
        }
    }
    
    public static int getTotal(Candidate[] Election){
        int t = 0;
        for(int i = 0; i < Election.length; i++){
            t += Election[i].getVotes();
        }
        return t;
    }
    
    public static void printResults(Candidate[] Election, int total){
        double percent = 0;
        for(int i = 0; i < Election.length; i++){
            percent = (Election[i].getVotes()/total(double)) * 100;
            System.out.println(percent);
            System.out.println("           Candidate      Votes Received           % of Total Votes");
            System.out.printf("%20s%20s%20s%n", Election[i].getName(), Election[i].getVotes(), percent);
        }
        System.out.println("Total number of votes in election: " + total);
    }
    
    public static void main(String[] args){
        Candidate[] Election = {new Candidate("John Smith", 5000), new Candidate("Mary Miller", 4000), new Candidate("Michael Duffy", 6000), new Candidate("Tim Robinson", 2500), new Candidate("Joe Ashtony", 1800)};
        int total = getTotal(Election);
        printVotes(Election);
        printResults(Election, total);
    }
}