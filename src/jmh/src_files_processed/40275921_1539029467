    double hoursWorkedThu = input.nextDouble();
    System.out.println("Enter hours worked on Friday:");
    double hoursWorkedFri = input.nextDouble();
    System.out.println("Enter hours worked on Saturday:");
    double hoursWorkedSat = input.nextDouble();
    System.out.println("Enter hours worked on Sunday:");
    double hoursWorkedSun = input.nextDouble();
    
    double hoursWorkedTotal = hoursWorkedMon + hoursWorkedTue + hoursWorkedWed + hoursWorkedThu + hoursWorkedFri + hoursWorkedSat + hoursWorked Sun;
    double totalPay = hourlyWage * hoursWorkedTotal;
    
     System.out.printf("%10S", "Day");
    System.out.printf("%10S", ""); 
    System.out.printf("%15S", "Regular Hours");
    System.out.printf("%10S", "");
    System.out.printf("%15S", "Total Pay");
    System.out.printf("%10S", "");
    
    System.out.println();
    
    System.out.printf("%10S", "Mon");
    System.out.printf("%10S", "");
    System.out.printf("%,15.2f", hoursWorkedMon);
    System.out.printf("%10S", "");
    System.out.printf("%10S", "");
    System.out.printf("$%, 14.2f", weeklyPay);
    
  System.out.println();
  
    System.out.printf("%10S", "Tue");
    System.out.printf("%10S", "");
    System.out.printf("%,15.2f", hoursWorkedTue);
    System.out.printf("%10S", "");
