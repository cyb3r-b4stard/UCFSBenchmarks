    double MonOvertime = input.nextDouble();
    System.out.println("Enter hours worked on Tuesday:");
    double TuePay = input.nextDouble();
    System.out.println("Enter overtime hours worked on Tuesday:");
    double TueOvertime = input.nextDouble();
    System.out.println("Enter hours worked on Wednesday:");
