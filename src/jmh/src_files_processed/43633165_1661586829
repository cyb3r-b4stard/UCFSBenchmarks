

public class Datenknoten extends Listenelement
{
    public Inhalt refInhalt = null;
    
    public Datenknoten(Inhalt in)
    {
        super();
        refInhalt = in;
        naechster = new Abschluss();
    }

   
    public String[] getInhalt()
    {
        return refInhalt.inhaltGeben();
    }
    
    public Listenelement anhaengen(Inhalt in)
    {
        if(in.nummerGeben()>refInhalt.nummerGeben()){
            Listenelement hilfEl;
            hilfEL = new Listenelement(in);
            hilfEL.naechster = naechster;
            naechster = naechster.anhaengen(in);
        return this;
    }
    
    public void drucken()
    {
        System.out.println(refInhalt.inhaltGeben()[0]+"   "+"\t"+refInhalt.inhaltGeben()[1]);
        naechster.drucken();
    }
    
    public int anzahlGeben()
    {
        return naechster.anzahlGeben() + 1;
    }
   }
}