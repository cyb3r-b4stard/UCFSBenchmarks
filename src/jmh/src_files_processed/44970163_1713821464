public class Trucks
{
    private String nameTruck;
    private Coordinates[] coordinates = new Coordinates [90];
    private int numberTruck;
    private String idTruck;
    private Container container;
    private double latitude;
    private double longitude;
    private double totalKm;
    private double lastKm;
    private int inspections;
    
    public Trucks(String nameTruck, int numberTruck, Container container, double latitude, double longitude) 
    {
        if (nameTruck != null && numberTruck > 0)
        {
            this.idTruck = nameTruck + numberTruck;
        }
        this.container = container;
        coordinates = new Coordinates[];
        this.totalKm = 0.0;
        this.lastKm = 0.0;
        this.inspections = 0;
    }
    
    public double moveTruck(double latitude, double longitude)
    {
        totalKm = Math.sqrt(Math.pow(2, (this.latitude - latitude) + (this.longitude - longitude)));
        return totalKm;
    }

    /*public boolean loadAndUnloadTruck()
    {
        if(Truck.contains(container))
        {
            Truck.removeContainer();
        } else Truck.addContainer();
    } */  
}   
