import javax.swing.JOptionPane;
public class Trainer
{
    String eingabe;
    int random1;
    int random2;
    int richtig;
    int falsch;
    public Trainer()
    {
        
    }

    public void starten()
    {   
        for(int i = 0; i < 10; i++)){
            random1 =  (int)(Math.random()*30+20);
            random2 = (int)(Math.random()*9+11);
            
            eingabe = JOptionPane.showInputDialog(null,"Was ergibt " + random1 + " * " + random2 + "?");
            
            if(eingabe == null){
                JOptionPane.showMessageDialog(null, "Das Programm wurde beendet! Sie haben: " + richtig + " richtiges Ergebnis und " + falsch + " falsche Ergebnisse.", "Ende", JOptionPane.INFORMATION_MESSAGE);
                break;
            }
            
            if(Integer.parseInt(eingabe) == random1 * random2){
                richtig += 1;
                JOptionPane.showMessageDialog(null, "Das Ergebnis war richtig! Sie haben: " + richtig + " richtiges Ergebnis und " + falsch + " falsche Ergebnisse.", "Richtig", JOptionPane.INFORMATION_MESSAGE);
            }
            else{
                falsch += 1;
                JOptionPane.showMessageDialog(null, "Das Ergebnis war leider falsch! Sie haben: " + richtig + " richtiges Ergebnis und " + falsch + " falsche Ergebnisse.", "Leider falsch", JOptionPane.INFORMATION_MESSAGE);
            }
        }
        JOptionPane.showMessageDialog(null, "Das Programm wurde beendet! Sie haben: " + richtig + " richtiges Ergebnis und " + falsch + " falsche Ergebnisse.", "Ende", JOptionPane.INFORMATION_MESSAGE);
    }
}