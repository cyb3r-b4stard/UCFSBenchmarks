
import java.util.Scanner;
public class Trip
{
    private String typeTrip;
    private double distance;
    private double fuel;
    private double kmPerLitre; 
     

    public Trip()
    {
        this.typeTrip = "";
        this.distance = 0;
        this.fuel = 0;
        this.kmPerLitre = 0;
    }

    public Trip(String tt, double d, double f)
    {
        this.typeTrip = tt;
        this.distance = d;
        this.fuel = f;
        this.kmPerLitre = 0; 
    }

    public String getTypeTrip()
    {
        return this.typeTrip;
    }

    public double getDistance()
    {
        return this.distance;
    }

    public double getFuel()
    {
        return this.fuel;
    }

    public void setTypeTrip(String tt)
    {
        this.typeTrip = tt;
    }

    public void setDistance(double d)
    {
        this.distance = d;
    }

    public void setFuel(double f)
    {
        this.fuel = f;
    }

    public void display()
    {
        System.out.println("\n\nThe type of trip is " + this.typeTrip);
        System.out.println("The distance travelled in kilometers is " + this.distance);
        System.out.println("The amount of fuel consumed in litres is " + this.fuel);
    }
    
    public void calculateKMPerLitre()
    {
       this.kmPerLitre = this.distance/this.fuel;
    }
    public double getKMPerLitre()
    {
        return this.kmPerLitre;
    }
    
    public boolean suitableCar()
    {
       Scanner scan = new.Scanner(System.in);
        int year;
        System.out.println("Enter year of the car");
        year = Scanner.nextInt;
        boolean suitable;
        if(year<5 && year >12)
        {
            sutable= true;
        }
        else
        {
            suitable = false;
        }
        return suitable;
    }
}