import static java.lang.System.*;

import java.text.DecimalFormat;

public class Line
{
    private int y2, y1, x2, x1;
    
    private double slope;
    
    public void setNums(int num1, int num2, int num3, int num4)
    {
        x1 = num1
        
        x2 = num3
        
        y1 = num2
        
        y2 = num4
    }
    
    public void slope()
    {
        slope = (y2 - y1) / (x2 - x1);
    }
    
    public void print()
    {
        DecimalFormat fmt = new DecimalFormat ("0.00");
        
        System.out.println("The slope of the line is  " +fmt.format(slope));
    }
}