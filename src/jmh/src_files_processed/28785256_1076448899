import javax.swing.*;
import javax.swing.event.*;
import java.awt.Component;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.*;
import java.awt.event.*;
import java.awt.event.ActionListener;
import java.awt.event.KeyListener;
import java.awt.event.KeyEvent;

public class Tentrada extends JFrame 
{
    Tentrada f
    

    /**
     * Constructor for objects of class Tentrada
     */
    public Tentrada()
    {
        super("Comienzo");
        setSize(1000, 1000);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Container cp = getContentPane();
        GridLayout gl = new GridLayout(8,1);
        cp.setLayout(gl);
        EventoBotonPulsado ebp = new EventoBotonPulsado();
        KeyListener listener = new MyKeyListener();
        JButton b1 = new JButton("Medicos");
        b1.addActionListener(ebp);
        b1.addKeyListener(listener);
        
        cp.add(b1);
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public static void main(String args[])
    {
        f = new Tentrada();
        
        f.pack();
        f.setLocationRelativeTo(null);
        f.setVisible(true);
    }
    public class EventoBotonPulsado implements ActionListener{
        public void actionPerformed(ActionEvent e) {
            Tdecide xd = new Tdecide();
            String xbus = e.getActionCommand();
            if (xbus.equals("Medicos")) {
                xd.queDecidir();
                int respuesta = xd.getxdecide();
                
                if (respuesta == 1) {
                    System.out.println("Tentrada iniciada en medicos ver "); 
                }
                
                
            }
            if (xbus.equals("Cambiar")) {}
            if (xbus.equals("AnHadir")) {}
            if (xbus.equals("Borrar")) {}
            
          
            
            System.out.println("xdecide: "+" y nombre boton: "+xbus);  
        }
    }
    public class MyKeyListener implements KeyListener {
        @Override
        public void keyTyped(KeyEvent e) {
        }

        @Override
        public void keyPressed(KeyEvent e) {
            System.out.println("keyPressed="+KeyEvent.getKeyText(e.getKeyCode()));
        }

        @Override
        public void keyReleased(KeyEvent e) {
            System.out.println("keyReleased="+KeyEvent.getKeyText(e.getKeyCode()));
            String xbus = KeyEvent.getKeyText(e.getKeyCode()).toString();
            if (xbus.equals("V")) {}
            if (xbus.equals("C")) {}
            if (xbus.equals("H")) {}
            if (xbus.equals("B")) {}
            
            
            if (KeyEvent.getKeyText(e.getKeyCode())== "Escape") {
                
                f.setVisible(false);   
            }
            if (KeyEvent.getKeyText(e.getKeyCode())== "Intro")  {
                f.setVisible(false);
                
                
            }
             System.out.println("xdecide: "+xdecide+" y nombre boton: "+xbus); 
        }
        
    }
    
    
}