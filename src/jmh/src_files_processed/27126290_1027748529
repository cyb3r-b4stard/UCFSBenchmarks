import javax.swing.border.Border;
import javax.swing.JComboBox;
import javax.swing.*;

public class GUI_project extends JFrame {

	private JMenuBar menuBar;
	private JButton button1;
	private JComboBox combobox1;
	private JComboBox combobox2;
	private JComboBox combobox3;
	private JLabel label1;


	public GUI_project(){

		setTitle("GUI_project");
		setSize(500,400);
		generateMenu();
		setJMenuBar(menuBar);

		JPanel contentPane = new JPanel(null);
		contentPane.setPreferredSize(new Dimension(500,400));
		contentPane.setBackground(new Color(192,192,192));


		button1 = new JButton();
		button1.setBounds(355,324,90,35);
		button1.setBackground(new Color(214,217,223));
		button1.setForeground(new Color(0,0,0));
		button1.setEnabled(true);
		button1.setFont(new Font("sansserif",0,12));
		button1.setText("Submit");
		button1.setVisible(true);
		button1.addMouseListener(new MouseAdapter() {
			public void mouseClicked(MouseEvent evt) {
				buttonSubmit()(evt);
			}
		});

		String[] fillBox1 = { "Maandag", "Dinsdag", "Woensdag", "Donderdag", "Vrijdag" };
		combobox1 = new JComboBox(fillBox1);
		combobox1.setBounds(50,157,90,35);
		combobox1.setBackground(new Color(214,217,223));
		combobox1.setForeground(new Color(0,0,0));
		combobox1.setEnabled(true);
		combobox1.setFont(new Font("sansserif",0,12));
		combobox1.setVisible(true);
		
		
		String[] fillBox2 = { "1e uur", "2e uur", "3e uur", "4e uur", "5e uur", "6e uur", "7e uur", "8e uur" };
		combobox2 = new JComboBox(fillBox2);
		combobox2.setBounds(200,157,90,35);
		combobox2.setBackground(new Color(214,217,223));
		combobox2.setForeground(new Color(0,0,0));
		combobox2.setEnabled(true);
		combobox2.setFont(new Font("sansserif",0,12));
		combobox2.setVisible(true);

		String[] fillBox3 = { "AK", "BI", "BTE", "CAR", "CKV", "DU", "EC", "EN", "FA", "GS", "HV", "HW", "LB" };
		combobox3 = new JComboBox(fillBox3);
		combobox3.setBounds(353,157,90,35);
		combobox3.setBackground(new Color(214,217,223));
		combobox3.setForeground(new Color(0,0,0));
		combobox3.setEnabled(true);
		combobox3.setFont(new Font("sansserif",0,12));
		combobox3.setVisible(true);

		label1 = new JLabel();
		label1.setBounds(9,53,482,21);
		label1.setBackground(new Color(214,217,223));
		label1.setForeground(new Color(0,0,0));
		label1.setEnabled(true);
		label1.setFont(new Font("SansSerif",0,20));
		label1.setText("Selecteer de gewenste dag, lesuur en vakafkorting");
		label1.setVisible(true);
		
		contentPane.add(button1);
		contentPane.add(combobox1);
		contentPane.add(combobox2);
		contentPane.add(combobox3);

		getContentPane().add(contentPane);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLocationRelativeTo(null);
		pack();
		setVisible(true);
	}

	public void generateMenu(){
		menuBar = new JMenuBar();

		JMenu file = new JMenu("File");
		JMenu tools = new JMenu("Tools");
		JMenu help = new JMenu("Help");

		JMenuItem open = new JMenuItem("Open   ");
		JMenuItem save = new JMenuItem("Save   ");
		JMenuItem exit = new JMenuItem("Exit   ");
		JMenuItem preferences = new JMenuItem("Preferences   ");
		JMenuItem about = new JMenuItem("About   ");


		file.add(open);
		file.add(save);
		file.addSeparator();
		file.add(exit);
		tools.add(preferences);
		help.add(about);

		menuBar.add(file);
		menuBar.add(tools);
		menuBar.add(help);
	}



	 public static void main(String[] args){
		System.setProperty("swing.defaultlaf", "com.sun.java.swing.plaf.nimbus.NimbusLookAndFeel");
		javax.swing.SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				new GUI_project();
			}
		});
	}

}