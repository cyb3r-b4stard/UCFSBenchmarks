
public class Carro
{
    private String matricula;
    private int velocidadeatual=0;
    private int velocidadefinal=200;
    private Condutor condutor;
    private boolean ligado = false;
    private Motor motor;
    
    
    
    
    /**
     * COnstrutor para objetos da classe Carro
     */
    public Carro()
    {

    }
    
    
    
    public Motor getMotor()
    {
        return motor;
    }
    
    
     public void setMotor(Motor motored)
    {
        this.motor=motored;
    }
    
    
    
    
    
    
    
    

    public String getMatricula()
    {
        return matricula;
    }
    
    public void setMatricula(String matricula)
    {
        this.matricula=matricula;
    }
    
    
    
    
    
     public Condutor getCondutor()
    {
        return condutor;
    }
    
 
    public void setCondutor(Condutor condutor)
    {
        this.condutor=condutor;
    }
    
    
    
    
    
    public int getVelocidadeAtual()
    {
        return velocidadeatual;
    }
    
    
    
    
    void ligar()
    {
            ligado=true;
            
        System.out.println("vrummmm");

    }

    void desligar()
    {
        ligado=false;
        
        System.out.println("mmmmmmmm");
    }

    void acelerar()
    {
    if(!ligado)
    System.out.println("O caso nÃ£o esta ligado por isso nao pode ser acelerado");
        
       
     else
        {
        velocidadeatual += + condutor.getDestreza()*0.1;
        motor.getmotor()* 0.1;
        
        if(velocidadeatual > velocidadefinal)
            velocidadeatual = velocidadefinal;       
            
            
    }
    
     
    
}
    
void travar(int intensidadeTravagem)
    {
        if(!ligado)
        System.out.println("O caso nÃ£o esta ligado por isso nao pode ser travado");
        
        
        
        
        
        else
        {
        if(intensidadeTravagem > velocidadefinal)
        intensidadeTravagem = velocidadefinal;
           
           
        else if(intensidadeTravagem < 0)
        intensidadeTravagem = 0;
                   
                   
        velocidadeatual -=  intensidadeTravagem;
          
        if(velocidadeatual < 0)
         velocidadeatual = 0;
           
        }
           
           
           
    }
    
    
public boolean isLigado()
{
       return ligado;
}
  
    
   
    
}