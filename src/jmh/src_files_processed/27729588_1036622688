        void read()throws IOException
        {
            FileReader fw=new FileReader("Stud.dat");
            BufferedReader br=new BufferedReader(fw);
            String mat="";
            while((mat=br.readLine())!=null)
            {
                StringTokenizer str=new String Tokenizer(mat);
                String name=str.nextToken();
                int roll=Integer.parseInt(str.nextToken());
                int marks=Integer.parseInt(str.nextToken());
                System.out.println(name+"\t"+roll+"\t"+marks);
            }
            br.close();
        }
    }
    