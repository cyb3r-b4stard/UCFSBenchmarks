import java.util.*;
public class matthiasTsoi
{
     
    
   public static void question1 (){
       
       System.out.println("Number             Square");
       for(int i = 1; i < 21; i++)
        {
         
         System.out.println(i);
         System.out.println("                  "+Math.pow(i,2));
           
        }
           
       
           
        }
   public static void question2 (){
       
       Scanner input = new Scanner (System.in);
       int numberOfMarks;
       double marks;
       double average = 0;
       System.out.println("Enter the number of marks you want to average.");
       numberOfMarks = input.nextInt();
       
       for (int i = 0; i < numberOfMarks; i++)
       {
       System.out.println("Enter a mark.");
       marks = input.nextDouble();
       average+=marks;
    }
      System.out.println("The number of marks is "+numberOfMarks);
      System.out.println("The average of "+numberOfMarks+ " is " +average/numberOfMarks); 
      
    }
   public static void question3 (){
     Scanner input = new Scanner (System.in);
     double radius;
     
     while (radius >=0)
     {
     
     System.out.println("Enter the radius.");
     radius = input.nextDouble();
     System.out.println("The Surface Area is ") + 4*Math.PI*(radius*Math.POW));
     
    }
     

     
    }
}f