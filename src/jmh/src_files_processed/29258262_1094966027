import java.util.*;
public class Lab3VariablesAndConditionals
{
    public static void main(String[]args)
    {
        Scanner input = new Scanner (System.in);
        double RoomLength;
        double RoomWidth;
        double RoomHeight;
        double DoorHeight;
        double DoorWidth;
        double WindowHeight;
        double WindowWidth;
        double StandardPaint = 14.99;
        double DeluxePaint = 29.99;
        int Walls;
        double RoomArea = 1.0;
        int PaintType;
        int WallCounter = 0;
        double DoorArea;
        double WindowArea;
        double PaintCans;
        double Price;
        double BeforeCost;
        System.out.print("How many walls are in the room?: ");
        Walls = input.nextInt();
         do 
        {   
            WallCounter = WallCounter + 1;
            System.out.print("Height of wall" + WallCounter + ": " );
            RoomHeight = input.nextDouble();
            System.out.print("Length of wall"+ WallCounter + ": ");
            RoomLength = input.nextDouble();
            System.out.print("Width of wall" + WallCounter + ": ");
            RoomWidth = input.nextDouble();
            RoomArea = RoomArea + (RoomHeight*RoomLength*RoomWidth);
            System.out.println(RoomArea);
        }while (WallCounter < Walls);
        
        System.out.print("Width of room's door:");
        DoorWidth = input.nextDouble();
        System.out.print("Height of door: ");
        DoorHeight = input.nextDouble();
        DoorArea = DoorWidth * DoorHeight;
        System.out.println(DoorArea);
        System.out.print("Height of Window: ");
        WindowHeight = input.nextDouble();
        System.out.print("Width of Window: ");
        WindowWidth = input.nextDouble();
        WindowArea = WindowHeight * WindowWidth;
        System.out.println(WindowArea);
        RoomArea = RoomArea - (WindowArea+DoorArea);
        System.out.println(RoomArea);
        System.out.print("What type of paint will you be using? Press 1 for standard or 2 for deluxe:");
        PaintType = input.nextInt();
        if (PaintType == 1)
        {
          PaintCans = RoomArea/250; 
          BeforeCost = (14.99*PaintCans);
          Price = (14.99*PaintCans)-(14.99*PaintCans*.0925);
        }
        else if (PaintType == 2)
        {
          PaintCans = RoomArea/250;
          BeforeCost = (29.99*PaintCans)
          Price = (29.99*PaintCans)-(29.99*PaintCans*.0925);
          System.out.print(Price);
        }    
       
        System.out.println("The paintable area of the room in ft squared is: " + RoomArea);
        System.out.println("The number of paint cans required; " + PaintCans);
        System.out.println("The before-tax cost of the paint: " + );
        System.out.println("The final, after-tax cost of the paint: " + Price);
    
     

    }
}