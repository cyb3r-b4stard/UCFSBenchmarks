import java.util.Scanner;
import java.security.SecureRandom;
/**
 * ###### ## ##### ## #### ####### #####.
 * 
 * @###### ##### ########
 * @####### ##/##/####
 */
public class StudentArray
{
    public static void main(String [] args)
    {
        
        String [] student;            
        student = new String[14];   
        
        fillArray = (student);
        displayStudents = (student)
        
        
        for (int i = 0; i < student.length; ++i)
        {
            System.out.print("Enter the name of student #" + (i+1) + ": ");
            student[i] = input.nextLine();
        }
        
        System.out.println("\nList of students:\n");
        for (int i = 0; i < student.length; ++i)
        {
            System.out.println(student[i]);
        }
        
        double [] testScore;
        testScore = new double[14];
        
        SecureRandom randGen = new SecureRandom();
        
        for (int i = 0; i < testScore.length; ++i)
        {
            testScore[i] = randGen.nextDouble()*100;
        }
        
        System.out.println("\nStudents names and test scores:\n");
        for (int i = 0; i < testScore.length; ++i)
        {
            System.out.printf("%-10s; %5.1f\n", student[i], testScore[i]);
        }
    }
    
    private static void fillArray(String [] student)
    { 
      for (int i = 0; i < student.length; ++i)
      {
            System.out.print("Enter the name of student #" + (i+1) + ": ");
            student[i] = input.nextLine();
      }
    }
    
    private static void displayStudents(String [] student)
    {
      System.out.println("\nList of students:\n");
      for (int i = 0; i < student.length; ++i)
      {
            System.out.println(student[i]);
      }
    }
    private static void assignTestScores(double [] testscore)
    {
        SecureRandom randGen = new SecureRandom();
        for (int i = 0; i < testScore.length; ++i)
        {
            testScore[i] = randGen.nextDouble()*100;
        }
    }    
}

