class Schüler {
    String Name;
    String Haarfarbe;
    boolean müde;
    String Geschlecht;
    double IQ;
    String Augenfarbe;
    double Größe;
    int Alter;
    String Religion;
    String[] ZufallsNamen = {"Hurensohn","Missgeburt","Niggo","Insci","Inscope","Inscope21","Salf","Rättele","SalfRättele"};
    String[] ZufallsGeschlecht = {"männchen","weibschen","Tom","zwitter");
    Schüler() {
        int zZahl =  (int)(Math.round(Math.random()*5));
        Name = ZufallsNamen[zZahl];
        Größe = Math.random()*2.60;
        müde = true;
        Alter = (int)(Math.random()*100);
        int zGeschlecht = (int)(Math.round(Math.random()*5));
        Geschlecht = ZuffalsGeschlecht[zGeschlecht];
    }    
    void legeNameFest () {
        Name = "Luca Ecke";    
    }
    void legemüdeFest () {
        müde = true;
    }
    void legeGeschlechtFest () {
        Geschlecht = "weiblein";
    }
    void IQsetzen () {
        IQ = 32;
    }
    void legeAugenfarbeFest () {
        Augenfarbe = "Hurensohn";
    }
    void GrößeSetzen () {
        Größe = 0.55;
    }
    void legeAlterFest () {
        Alter = 9;
    }
    void legeReligionFest () {
        Religion = "Heide";
    }
    void legeHaarfarbeFest () {
        Haarfarbe = "Hurensohn";
    }
    void StandardSetup () {
        Name = "Luca Ecke";
        Haarfarbe = "braun";
        müde = true;
        Geschlecht = "männlein";
        IQ = 12;
        Augenfarbe = "braun";
        Größe = 1.79;
        Alter = 15;
        Religion = "heidnisch";         
    }
    void wachsen() {
        Größe = Größe + 0.05;
        Größe += 0.05;
    }
    void schrumpfen() {
        Größe = Größe / 2;
    }
    void dünnSinn() {
        IQ = Alter - 10*Größe;
    }
       
}