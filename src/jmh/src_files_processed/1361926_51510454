package eps.einfacheGrafik;

public class strichmann
{
    private int alter;
    
    private Rechteck mund;
    private Ellipse kopf;
    private Ellipse auge_links;
    private Ellipse auge_rechts;
    private Rechteck koerper;
    private Rechteck arme;
    private Rechteck huefte;
    private Rechteck bein_links;
    private Rechteck bein_rechts;
    
   public strichmann(int x_position, int y_position, int alter)
    {
        kopf = new Ellipse(x_position + 0, y_position + 0, 100, 100, "blau");
        koerper = new Rechteck(x_position + 40, y_position + 100, 150, 20, "blau");
        huefte = new Rechteck(x_position + 0, y_position + 250, 20, 100, "blau");
        bein_links = new Rechteck(x_position + 0, y_position + 270, 50, 20, "blau");
        bein_rechts = new Rechteck(x_position + 80, y_position + 270, 50, 20, "blau");
        arme = new Rechteck(x_position + 0, y_position + 130, 20, 100, "blau");
        auge_links = new Ellipse(x_position + 25, y_position + 30, 10, 10, "weiss");
        auge_rechts = new Ellipse(x_position + 65, y_position + 30, 10, 10, "weiss");
        mund = new Rechteck(x_position + 35, y_position + 60, 20, 30, "weiss");
    }
    
   public void laufen(int x_verschiebung, int y_verschiebung)
   {
       kopf.verschieben(x_verschiebung, y_verschiebung);
       koerper.verschieben(x_verschiebung, y_verschiebung);
       huefte.verschieben(x_verschiebung, y_verschiebung);
       bein_links.verschieben(x_verschiebung, y_verschiebung);
       bein_rechts.verschieben(x_verschiebung, y_verschiebung);
       arme.verschieben(x_verschiebung, y_verschiebung);
       auge_links.verschieben(x_verschiebung, y_verschiebung);
       auge_rechts.verschieben(x_verschiebung, y_verschiebung);
       mund.verschieben(x_verschiebung, y_verschiebung);
}