import basis.*;
import java.awt.Color;

public class malprogramm
{
    private Fenster fenster;
    private Stift stift;
    private Stift stifft;
    private Stift stiffft;
    private Maus maus;
    private Knopf knopf;
    private Knopf rot;
    private Knopf blau;
    private Knopf grün;
    private Knopf gelb;
    private Knopf schwarz;
    private Knopf orange;
    private Knopf pink;
    private Knopf Clear;
    private Knopf Standard;
    private Knopf weiss;
    private Knopf lila;
    private Knopf grau;
    private Knopf Dicker;
    private Knopf Dünner;
    private int x;
    public malprogramm()
    {
        fenster=new Fenster(1000,1000);
        stift=new Stift();
        stifft=new Stift();
        stiffft=new Stift();
        maus=new Maus();
        knopf=new Knopf("Exit",0,0,75,25);
        rot=new Knopf("red",525,0,75,25);
        blau=new Knopf("blue",150,0,75,25);
        grün=new Knopf("green",225,0,75,25);
        gelb=new Knopf("yellow",300,0,75,25);
        schwarz=new Knopf("black",75,0,75,25);
        orange=new Knopf("orange",375,0,75,25);
        pink=new Knopf("pink",450,0,75,25);
        Clear=new Knopf("Clear",600,0,75,25);
        Standard=new Knopf("Standard",1050,0,75,25);
        weiss=new Knopf("weiss",675,0,75,25);
        lila=new Knopf("lila",750,0,75,25);
        grau=new Knopf("grau",825,0,75,25);
        Dicker=new Knopf("Dicker",900,0,75,25);
        Dünner=new Knopf("Dünner",975,0,75,25);
        x=1;
    }
      public void fuehreAus(){
      while (! knopf.wurdeGedrueckt()){
        stift.bewegeBis(maus.hPosition(),maus.vPosition());
        stifft.bewegeBis(fenster.breite()-maus.hPosition(),maus.vPosition());
        stiffft.bewegeBis(fenster.breite()maus.hPosition(100),maus.vPosition(100));
        if (maus.istGedrueckt()){
        stift.normal();
        stifft.normal();
        stiffft.normal();
        stift.runter();
        stifft.runter();
        stiffft.runter();
        }
        else{
        stift.hoch();
        stifft.hoch();
        stiffft.hoch();
        }
        if(maus.istRechtsGedrueckt()){
        stift.runter();
        stifft.runter();
        stiffft.runter();
        stift.radiere();
        stifft.radiere();
        stiffft.radiere();
        }
        if(rot.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.ROT);
        stifft.setzeFarbe(Farbe.ROT);
        stiffft.setzeFarbe(Farbe.ROT);
        }
        if(blau.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.BLAU);
        stifft.setzeFarbe(Farbe.BLAU);
        stiffft.setzeFarbe(Farbe.BLAU);
        }
        if(grün.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.GRÜN);
        stifft.setzeFarbe(Farbe.GRÜN);
        stiffft.setzeFarbe(Farbe.GRÜN);
        }
        if(gelb.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.GELB);
        stifft.setzeFarbe(Farbe.GELB);
        stiffft.setzeFarbe(Farbe.GELB);
        }
        if(schwarz.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.SCHWARZ);
        stifft.setzeFarbe(Farbe.SCHWARZ);
        stiffft.setzeFarbe(Farbe.SCHWARZ);
        }
        if(orange.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.ORANGE);
        stifft.setzeFarbe(Farbe.ORANGE);
        stiffft.setzeFarbe(Farbe.ORANGE);
        }
        if(pink.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.PINK);
        stifft.setzeFarbe(Farbe.PINK);
        stiffft.setzeFarbe(Farbe.PINK);
        }   
        if(Clear.wurdeGedrueckt()){
        stift.setzeLinienBreite(3000);
        stifft.setzeLinienBreite(3000);
        stiffft.setzeLinienBreite(3000);
        }
        if(weiss.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.WEISS);
        stifft.setzeFarbe(Farbe.WEISS);
        stiffft.setzeFarbe(Farbe.WEISS);
        }
        if(lila.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.rgb(200,0,200));
        stifft.setzeFarbe(Farbe.rgb(200,0,200));
        stiffft.setzeFarbe(Farbe.rgb(200,0,200));
        }
        if(grau.wurdeGedrueckt()){
        stift.setzeFarbe(Farbe.rgb(75,75,75));
        stifft.setzeFarbe(Farbe.rgb(75,75,75));
        stiffft.setzeFarbe(Farbe.rgb(75,75,75));
        }
        if(Dicker.wurdeGedrueckt()){
        stift.setzeLinienBreite(x+1);
        x = x+1;
        stifft.setzeLinienBreite(x+1);
        stiffft.setzeLinienBreite(x+1);
        }
        if(Dünner.wurdeGedrueckt()){
        stift.setzeLinienBreite(x-1);
        x = x-1;
        stifft.setzeLinienBreite(x-1);
        stiffft.setzeLinienBreite(x-1);
        }
        if(Standard.wurdeGedrueckt()){
        stift.setzeLinienBreite(1);
        stifft.setzeLinienBreite(1);
        stiffft.setzeLinienBreite(1);
        }
        }
      this.gibFrei();
    }  
    private void gibFrei(){
     knopf.gibFrei();
     rot.gibFrei();
     blau.gibFrei();
     grün.gibFrei();
     gelb.gibFrei();
     schwarz.gibFrei();
     orange.gibFrei();
     pink.gibFrei();
     maus.gibFrei();
     stift.gibFrei();
     stifft.gibFrei();
     stiffft.gibFrei();
     fenster.gibFrei();
     Clear.gibFrei();
     weiss.gibFrei();
     lila.gibFrei();
     grau.gibFrei();
     Dicker.gibFrei();
     Dünner.gibFrei();
     Standard.gibFrei();
    }
}