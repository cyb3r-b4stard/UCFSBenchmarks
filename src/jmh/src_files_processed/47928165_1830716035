package RockPaperScissorsUNFINISHED;

import java.util.Scanner;
import java.util.ArrayList;
public class RPSRunner
{
    public static void main(String[] args)
    {
        int opps = 0;
        String move  = "";
        System.out.print('\u000c');
        System.out.println("Yo bro how many people you wanna fight?")
        opps = nextInt();
        System.out.println("Bro what is your move, Rock, Paper, or Scissors?");
        move = nextWord();
        
        for(int i =  0; i < oops;i++)
        {
            System.out.println("Your move: " + move)
            Rules.outcome(CompMove.CMove(), move);
            
            
            
            
            
            
        }
    }
    public int nextInt()
    {
          Scanner in = new Scanner(System.in);
        int name = in.nextInt();
        in.close();
        return name;
    }
    public int nextWord()
    {
          Scanner in = new Scanner(System.in);
        String name = in.nextLine();
        in.close();
        return name;
    }
}