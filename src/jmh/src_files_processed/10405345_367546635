 */
public class RightTriangle
{
    private double base = 0;
    private double height = 0;

    /**
     * Constructs a right angle with a default value of 1 for both base and height.
     */
    public RightTriangle()
    {
        base = 1;
        height = 1;
    }
    
    /**
     * Constructs a right angle with a value for base and height given by the user.
     */
    public RightTriangle(double b, double h)
    {
        base = b;
        height = h;
    }
    
    /**
     * A method that set the value of the base.
     */
    public int setBase(double b)
    {
        base = b;
        return (base);
    }
    
    /**
     * A method that set the value of the height.
     */
    public int setHeight(double h)
    {
        height = h;
        return (height);
    }
    
    /**
     * A method that set the value of the base.
     */
    public int getBase()
    {
        return (base);
    }
    
    /**
     * A method that set the value of the base.
     */
    public int getHeight()
    {
        return (height);
    }
    
    /**
     * A method that determines the area of the right triangle.
     */
    public int area()
    {
        double area = 0;
        area = (base * height) / 2;
        return (area);
    }
    
    public equals (Object testRT)
    {
        if ()
    }
}