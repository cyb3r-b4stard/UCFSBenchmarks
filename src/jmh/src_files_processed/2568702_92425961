public static void main (String[] args) {
    int n = args.length;
    File f = new File(args[n-1]);
    FileOutputStream out = new FileOutputStream(f, true);
    for(int i=0; i<n-1; i++)
    {try{
        File g = new File(args[i]);
        copyFileUsingStream(g, out);
    }catch (FileNotFoundException e){System.out.println("En unputfil eksisterer ikke");}
    }
    out.close();
}   
catch(IOException e){}

public static void copyFileUsingStream throws IOException(File source, FileOutputStream out){
    InputStream is = null;
    try {
        is = new FileInputStream(source);
        byte[] buffer = new byte[1024];
        int length;
        while ((length = is.read(buffer)) > 0) {
            out.write(buffer, 0, length);
        }
        is.close();
    }
}
}