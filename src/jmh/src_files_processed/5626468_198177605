import java.util.Scanner;

public class CountVowels {
    public static void main(String[] args) 
    {
        Scanner kb = new Scanner(System.in);

        String words;

        System.out.println("Enter some words ");
        words = kb.nextLine();
        int count =0;
        while (!words.equals("#")){
            count = 0
            System.out.println("Number of vowels: " + count);
            System.out.println("please enter some more text");
            words = kb.nextLine();
            for(int vowels = 0; vowels < words.length(); vowels++)
            {       
                if(words.charAt(vowels) == 'a' )
                {
                    count++;

                }
                else if(words.charAt(vowels) == 'e')
                {
                    count++;
                }
                else if(words.charAt(vowels) == 'i' )
                {
                    count++;
                }
                else if(words.charAt(vowels) == 'o' )
                {
                    count++;
                }
                else if(words.charAt(vowels) == 'u' )
                {
                    count++;
                }

            }
        }

        System.out.println("You have terminated the program");
    }
}