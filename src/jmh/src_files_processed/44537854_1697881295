import java.util.Scanner;
public class CaesarShiftTester
{
    public static void main(String[] args)
    {
        System.out.println("Whould you like to encrypt (E) or decrypt (D)? Q to quit.");
        Scanner in = new Scanner(System.in);
        String n = in.next();
        
        if(n.equalsIgnoreCase("e"))
        {
            System.out.print("Please enter a shift value: ");
            int shift = in.nextInt();
            in.nextLine(); 
            for(int i = 0; i < CaesarShiftEncryption.cAlph(shift).length; i++)
            {
                System.out.print(CaesarShiftEncryption.cAlph(shift)[i] + " ");
            }
            System.out.println();
            System.out.print("Please enter a word or sentence to convert: ");
            String e = in.nextLine();
            if(e.equalsIgnoreCase("q")
            {
                System.out.println("You have entered Q to quit.");
            }
            else
            {
                while(!e.equalsIgnoreCase("q"))
                {
                    System.out.print("Please enter a word or sentence to convert: ");
                    String e = in.nextLine();
                }
            }
        }
        else if(n.equalsIgnoreCase("d"))
        {
        }
        else
        {
            System.out.println("You have entered Q to quit or a letter other than E or D.");
        }
    }
}