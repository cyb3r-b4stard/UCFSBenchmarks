import java.util.Scanner;
import java.io.*;

public class BaseballStats
{
    public static void main (String[] args) throws IOException
    {
        String player;
        int hit = 0;
        int out = 0;
        int walk = 0;
        int scarifice = 0;
        double total;
        Scanner fileScan, statsScan;
        fileScan = new Scanner (new File("stats.txt"));
        while (fileScan.hasNext())
        {
            player = fileScan.nextLine();
            System.out.println ("Baseball Player: " + player);
            statsScan = new Scanner (player);
            statsScan.useDelimiter(",");
            while (statsScan.hasNext())
                {
                    if (statsScan.next().equals('h'))
                    hit++;
                    if (statsScan.next().equals('o'))
                    out++;
                    if (statsScan.next().equals('w'))
                    walk++;
                    if (statsScan.next().equals('s'))
                    scarifice++;
                }
            System.out.println("Hits: " + hit);
            System.out.println("Outs: " + out);
            System.out.println("Walks: " + walk);
            System.out.println("Scarifice: " + scarifice);
            System.out.println("Batting Average: " + (hit/(double)(hit + out));

        }
    }
}