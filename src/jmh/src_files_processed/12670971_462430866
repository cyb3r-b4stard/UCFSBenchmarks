import Myro.*;

/**
 * ##### ## ##### ## # ######### #########.
 * 
 * @###### (#### ####) 
 */
public class ImageScale
{
    private Scribbler robot;

    /**
     * Scales an image to a specified dimension (w x h).
     * 
     * @param img The original image
     * @param w The width of the scaled image
     * @param h The height of the scaled image
     * @return The image scaled to fit in the w x h image
     * 
     * @pre w >0 and h > 0
     */
    private MyroImage scale( MyroImage img, int w, int h )
    {
        MyroImage newImage = new MyroColorImage( w, h );

        double scaleFactorW = (double)img.getWidth() / w;
        double scaleFactorH = (double)img.getHeight() / h;

        for( MyroPixel p: newImage )
        {
            int x = x
            int y = y
            MyroPixel imgP = img.getPixel( (int)(x*scaleFactorW), (int)(y*scaleFactorH) );
            p.setColor( imP.getColor() );
        }
        
        return newImage;
    }


    public void main()
    {
        MyroImage image = new MyroColorImage();
        image.loadImage( MyroGUI.pickAFile(MyroGUI.FILE_OPEN) );
        image.show("Original");

        int width = MyroGUI.inputInteger("Please enter the width");
        int height = MyroGUI.inputInteger("Please enter the height");

        MyroImage newImage = scale( image, width, height );
        newImage.show("Scaled");
    }
}