import java.util.ArrayList;
import java.util.Scanner;
import java.util.Arrays;

public class Person
{
    private String name = "";
    private int arrayLength = 0;
    String[] genomeArray = new String[];
    PersonGenome genome = new PersonGenome();

    public Person(String name) throws Exception{
        this.name = name;
    }
    
    public void load() {
        genome.load("RogerGenome",genomeArray);
    }
    
    public void printArray() {
        for(int i = 0; i < genome.getArrayLength(); i++) {
            System.out.println(genomeArray.get(i));
        }
    }
    
    public String getArrayCell(int x, int y) {
        String line = genomeArray.get(y);
        if(x == 0) {
           return line.substring(0,10); 
        }
        else {
            return "";
        }
    }
}
