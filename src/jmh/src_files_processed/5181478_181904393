import java.util.Scanner;
import java.util.Date;

/**
 * # ###### #### ######### ##### ####### ############ ## ## #######
 */
public class AccountManager
{
    private Account account;
    private Scanner reader;

    /**
     * Constructor for objects of class AccountManager
     */
    public AccountManager(Account account)
    {
        this.account = account;
        reader = new Scanner(System.in);
    }

    /**
     * start the user interface
     */
    public void start()
    {
        System.out.println("WELCOME TO THE ACCOUNT HANDLER APPLICATION");
        boolean finished = false;

        while(!finished)
        {
            printMenu();
            String input = reader.nextLine();
            int opt=0;
            try
            {
                opt = Integer.parseInt(input);
            }
            catch (Exception e){}

            if(opt==1)
            {
                listDetails();
            }
            else if(opt==2)
            {
                listDetailsOfTransaction();
            }
            else if(opt==3)
            {
                recordTransaction();
            }
            else if(opt==4)
            {
                deleteTransaction();
            }
            else if(opt==5)
            {
                finished = true;
            }
            else
            {
                System.out.println("Command not recognised");
            }
        }
        System.out.println("THANK YOU FOR USING THE ACCOUNT HANDLER APPLICATION");
    }

    private void printMenu()
    {
        System.out.println("MENU");
        System.out.println("1. list transactions");
        System.out.println("2. list a specified transaction");
        System.out.println("3. add a new transaction");
        System.out.println("4. delete a transaction");
        System.out.println("5. quit");
        System.out.print("SELECT OPTION:\n>");
    }

    /**
     * lists all details of the account and transactions
     */
    public void listDetails()
    {
        public int getAccountId () 
        return accountId; 

        public String getAccountName () 
        return accountName; 

        public String getAccountAddress () 
        return accountAddress; 

        public double getBalance () 
        return balance; 

    }

    /**
     * lists details of a specified transaction
     */
    public void listDetailsOfTransaction()
    {
        System.out.print("Transaction reference?\n>");
        String reference = reader.nextLine();


    }

    /**
     * records a transaction and adds it to the account
     */
    public void recordTransaction()
    {
        System.out.print("Transaction amount?\n>");
        String inputAmount = reader.nextLine();
        double amount = Double.parseDouble(inputAmount);

        System.out.print("Transaction type?\n>");
        String type = reader.nextLine();


        Date date = new Date();


        System.out.println("Transaction added");
    }

    /**
     * deletes a specified transaction
     */
    public void deleteTransaction()
    {
        System.out.print("Transaction reference?\n>");
        String reference = reader.nextLine();

        account.removeTransaction(reference);
    }

    /**
     * entry point for application
     */
    public static void main(String[] args)
    {
        Customer customer = new Customer("Sebastien", "Vettel"); 
        Account account = new Account(customer, "88888"); 
    }
}