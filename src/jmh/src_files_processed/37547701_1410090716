
/**
 * ### #-#
 * 
 * @###### ######## ####
 * @####### #### ##, ####
 */

public class RetailItem{
    
    private String itemDescription;
    private double itemPriceInCAD;
    private boolean isInDemand;
    private int numberOfUnitsInStock;
    
    
    /**this is the default constructor, it is used to initailize the instance variable to its corresponding 
     * default value and sets string to "", not null.
     *  
     */
    public RetailItem(){
        itemDescription = "";
        itemPriceInCAD = 0.0;
        isInDemand = false;
        numberOfUnitsInStock = 0;
    }
    
    /**this is the non default constructor it takes paramaeters to intialize all instance variables.
     * sets strings from null to ""
     * validates numeric parameterts and ensures they are not negative, if they are they get set to 0.
     * 
     * @param inputItemDescription
     * @param inputItemPriceInCAD
     * @param inputIsInDemad
     * @param inputNumberOfUnitsInStock
     * 
     */
     public RetailItem (String inputItemDescription, double inputItemPriceInCAD, boolean inputIsInDemand, 
           int inputNumberOfUnitsInStock){
               if(inputItemDescription == null){
                   itemDescription = "";
                }
                else{
                    itemDescription = inputItemDescription;
                }
               if(inputItemPriceInCAD<0) {
                   itemPriceInCAD = 0;
                }
                else{
                    itemPriceInCAD=inputItemPriceInCAD;
                }
               isInDemand = inputIsInDemand;
               if(inputNumberOfUnitsInStock <0){
                   numberOfUnitsInStock = 0;
                }
                else{
                     numberOfUnitsInStock = inputNumberOfUnitsInStock;
               }
}  