 */
public class CyberPet
{
    private boolean isEating;
    private boolean isSleeping;
    private int age;
    private String petName;
    private String type;
    private String state;
    private static final EATING;
    private static final SLEEPING;
    private static final SPEAKING;
    private static final CUDDLING;

    /**
     * Constructor for objects of class CyberPet
     */
    public CyberPet()
    {
        age = 1;
        type = "dog";
    }

    /**
     * Constructor for objects of class CyberPet
     */
    public CyberPet(String t, int a)
    {
        age = a;
        type = t;
    }
   
    public void feedPet(String food)
    {
         isEating = true; 
         state = "isEating";
    }
    
    public void putPetToSleep()
    {
        isSleeping = true;
        state = "isSleeping";
    }
    
    public void getPetName()
      {
      System.out.println("Name: " + petName);
    }
    
    public void getPetType()
    {   
      System.out.println("Type: " + type);
    }
    
    public void getPetAge()
    {
        System.out.println("Age: " + age);
    }
    
    public void getPetInformation()
    {
      System.out.println("Name: " + petName);
        System.out.println("Age: " + age);
      System.out.println("Type: " + type);
      System.out.println("State: " + state); 
    }
    
    public void petBirthday()
    {
         age++;
    }
    
    public void healthCheckup()
    {
        if (age >= 10) {
            System.out.println("I'm sorry, but your pet died of old age.");
        }
        else {
            System.out.println("Your pet is healthy and " + age + " years old.");
        }
    }
    
    public void namePet(String name)
    {
        int x;
        x = name.length();
        if (x >= 3) {
            petName = name;
        }
        else {
            System.out.println( " Please name your character with two or more letters " );
        }

    }}
     
    
   




