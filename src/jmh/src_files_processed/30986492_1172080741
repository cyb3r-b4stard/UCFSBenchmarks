import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.border.TitledBorder;

public class SimpleClient
{
    int WIDTH = 300;
    int HEiGHT= 200;
    public SimpleClient(){
        JFrame fenster = new JFrame("NTB SimpleChatClient");
        Container inhaltsfläche = fenster.getContentPane();
        fenster.setPreferredSize(new Dimension(WIDTH,HEiGHT));
        inhaltsfläche.setLayout(new BorderLayout());

        inhaltsfläche.add (new JButton("Osten"), BorderLayout.EAST);
        inhaltsfläche.add (new JButton("Zentrum"), BorderLayout.CENTER);
        inhaltsfläche.add (new JButton("Westen"), BorderLayout.WEST);

        JPanel nordPanel = new JPanel(new GridLayout(2,1));   
        inhaltsfläche.add (nordPanel,BorderLayout.NORTH);
        JPanel serverPanel = new JPanel(new BorderLayout());
        nordPanel.add(serverPanel);
        nordPanel.setBorder(new TitledBorder ("Configuration"));

        JLabel server= new JLabel ("Server:");
        server.setPreferredSize(new Dimension (60,30));
        serverPanel.add(server, BorderLayout.WEST);
        serverPanel.add(new JTextField(20),BorderLayout.CENTER);

        JPanel namePanel = new JPanel(new BorderLayout());
        nordPanel.add(namePanel);
        JLabel name = new JLabel ("Name:");
        name.setPreferredSize(new Dimension (60,30));
        namePanel.add(name,BorderLayout.WEST);  
        namePanel.add(new JTextField(),BorderLayout.CENTER);

        JPanel registerPanel = new JPanel(new GridLayout(1,2));
        namePanel.add(registerPanel,BorderLayout.EAST);
        registerPanel.add(new JButton ("Regiter"));
        registerPanel.add(new JButton ("Unregister"));
        
        
        JPanel centerPanel= new JPanel (new BorderLayout);
        centerPanel.setLayout (new BorderLayout());
        centerPanel.setBorder (new TitledBorder ("Received Messages");
        centerPanel.setPreferredSize (new Dimension (500,300);
        centerPanel.add (new JTextField(), BorderLayout.CENTER);
        
        
        

        JPanel südPanel= new JPanel (new BorderLayout());
        südPanel.setLayout(new BorderLayout());
        südPanel.setBorder (new TitledBorder ("Send Message"));
        südPanel.setPreferredSize(new Dimension (100,60));
        inhaltsfläche.add (südPanel,BorderLayout.SOUTH);
        südPanel.add(new JTextField(), BorderLayout.CENTER);               

        JButton sendButton = new JButton ("Send", new ImageIcon("search.jpg"));
        südPanel.add(sendButton, BorderLayout.EAST);

        Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
        double width = screenSize.getWidth();
        double height = screenSize.getHeight();
        fenster.pack();
        fenster.setVisible(true);
    }

}
