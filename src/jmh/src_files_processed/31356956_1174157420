import java.util.Scanner;
public class Ex04
{
    public static void main(String args[]){
        Scanner input = new Scanner(System.in);
        System.out.println("Informe um número inteiro e maior do que zero: ");
        int valor = input.nextInt(); 
        while (valor < 1){
            System.out.println("Valor inválido. Informe um número inteiro e maior do que zero: ");
            int valor = input.nextInt();
        }
        if (value % 2 == 0){
            int divisor = 1;
            int numeros = 0;
                    for (divisor; divisor < valor; divisor++)
                        if(valor % divisor == 0)
                        numeros = numeros + divisor;
                    if (valor == numeros) System.out.println(valor + " é um número perfeito.");
                    else System.out.println(valor + " não é um número perfeito.");
        }
        else {
            int divisor = 1;
            int numeros = 0;
                for(divisor; divisor <= valor; divisor++)
                    if (valor % divisor == 0)
                    numeros = numeros++;
            if (numeros == 2) System.out.println(valor + " é um número primo.");
            else System.out.println(valor + " não é um número primo");
        }    
    }
}