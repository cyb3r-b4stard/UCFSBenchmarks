public class Venta
{ 
    private String run;
    private String nombre;
    private String codigoVenta;
    private boolean tipoVenta;
    private Camioneta camioneta;
    
    private Venta (){}
    
    private Venta (String run,String nombre,String codigoVenta,boolean tipoVenta,String chasis,int anio,boolean cabinaDoble,String tipoCombustible,double precioDolar){
       this.run=run; 
       this.nombre=nombre;
       this.codigoVenta=codigoVenta;
       this.tipoVenta=tipoVenta;
    }
    
    public String getRun(){
        return run;
    }
    
    public String getNombre(){
        return nombre;
    }
    
    public String getCodigoVenta(){
        return codigoVenta;
    }
    
    public boolean getTipoVenta(){
        return tipoVenta;
    }
    
    public Camioneta getCamioneta(){
        return camioneta;
    }
    
    public void setRut(String run){
        this.run=run;
    }
    
    public void setNombre(String nombre){
        this.nombre=nombre;
    }
    
    public void setCodigoVenta(String codigoVenta){
        if(codigoVenta.length()==1)
        this.codigoVenta=codigoVenta;
        else this.codigoVenta="abcd";
    }
    
    public void isTipoVenta(boolean tipoVenta){
        this.tipoVenta=tipoVenta;
    }
    
    public void setCamioneta(Camioneta camioneta){
        this.camioneta=camioneta;
    }
    
    
    public double Dolardesc(boolean cabinaDoble,double precioDolar){
     if(cabinaDoble==true)return precioDolar;
     if(cabinaDoble==false)return precioDolar-25;
     }
    
    
    public String nombrarCombustible(boolean tipoVenta){
        if (tipoVenta==true)System.out.println("Credito");
        if(tipoVenta==false)System.out.println("Contado");
    }
    
    public void obtenerDatos (){
        
        System.out.println("Nombre del Due√±o : "+,this.nombre);
        System.out.println("Numero Chasis : " , this.chasis);
        System.out.println("Precio US : ", this.precioDolar);
    }
    
    public String obtenerCodigoVenta(String run,String chasis,String tipoCombustible){
        int numerochasis;
        if(chasis.length()==7)this.chasis.substring(5,6,7)= numerochasis;
        if(chasis.length()==8)this.chasis.substring(6,7,8)= numerochasis;
        
        System.out.println((run.substring(4,5)),numerochasis,tipoCombustible.substring(6,7));;
       
        
    }
        
}