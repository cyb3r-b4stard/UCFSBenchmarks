import java.util.Character;
/**
 * #### ##### ###### ## ######### ###### ## ###### ### #### ######.
 * #### ##### ########### ## ####### ### ###### ## #### ######## ## ####.
 * 
 * @###### ### ######## ### ######## 
 * @####### ## ####### ####
 */
public class Book
{
    private String title;
    private String author;
    private int cost;
    private int rating;

    /**
     * Constructor for objects of class Book
     */
    public Book()
    {
        title = "default title";
        author = "default author";
        cost = 0;
        rating = 0;
    }
    
    public Book(String aTitle, String anAuthor, int theCost, int theRating)
    {
        title = aTitle;
        author = anAuthor;
        cost = theCost;
        rating = theRating;
    }
    
    public void displayBook()
    {
        System.out.print("\u000C");
        System.out.println("Book Details :");
        System.out.println("Title  :" + title);
        System.out.println("Author :" + author);
        System.out.println("Cost   :" + cost);
        System.out.println("Rating :" + rating);
    }
    
    public String getAuthor()
    {
        return author;
    }
    
    public int getCost()
    {
        return cost;
    }
    
    public int getRating()
    {
        return rating;
    }
    
    public String getTitle()
    {
        return title;
    }
    
    public void setAuthor(String authName)
    {
        if (authName.trim().length()  > 0)
            for (int i = 0; i < testString.trim().length(); i++)
                if (Character.isLetter(testString.trim().charAt(i)))
                    valid = true;
                else
                {
                    valid = false;
                    break;
                }
            author = authName;
        else
            author = "default author";
    }
    
    public void setCost(int bookPrice)
    {
        cost = bookPrice;
    }
    
    public void setRating(int bookRating)
    {
        rating = bookRating;
    }
    
    public void setTitle(String bookTitle)
    {
        title = bookTitle;
    }
}