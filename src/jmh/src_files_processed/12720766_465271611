    public Chatroom isInChatroom;

    /**
     * Constructor for standart objects of class User
     */
    public User()
    {
        Username = "Hans";
        Messagelog = new ArrayList<String>();
        Chatroom isInChatroom = null;
    }

    /**
     * Constructor for individual objects of class User
     */
    public User(String pUsername, int pStatus)
    {
        Username = pUsername;
        Messagelog = new ArrayList<String>();
        Chatroom isInChatroom = null;
    }

    /**
     * Veranlasst den Benutzer einen gegebenen Chatroom zu betreten.
     */
    public void joinRoom(Chatroom pChatroom)
    {   
        pChatroom.addUser(this);
        isInChatroom = pChatroom;
    }

    /**
     * Veranlasst denn Benutzer, den Chatroom, in dem er sich befindet, zu verlassen.
     */
    public void leaveRoom(User puser)
