class MENSCHENKETTE
{
    private KNOTEN erster;

    public void MENSCHENKETTE()
    {
        erster = null;
    }

    public void erstenSetzen(KNOTEN nerster)
    {
        erster = nerster;
    }

    public void botschaftAnAlleSenden(String botschaft)
    {
        if(erster == null)
        {
            System.out.println("Keine KNOTEN vorhanden");
        }

        KNOTEN aktuellerKnoten=erster;

        do 
        {
            if (aktuellerKnoten.inhaltGeben() != null)
            {
                aktuellerKnoten.inhaltGeben().botschaftAnnehmen(botschaft);
                aktuellerKnoten=aktuellerKnoten.nächstenGeben();
            }
        }
        while (aktuellerKnoten != null);

    }

    private int KnotenAnzahlBestimmen()
    {
        KNOTEN aktuellerKnoten=erster;
        int KnotenAnzahl=0;
        if (erster!=null)
        {
            do
            {
                KnotenAnzahl++;
                aktuellerKnoten=aktuellerKnoten.nächstenGeben();
            }
            while(!(aktuellerKnoten==null));
        }
        return KnotenAnzahl;
    }

    public void KnotenAnzahl()
    {
        System.out.println("Es sind " + KnotenAnzahlBestimmen()+ "Personen da!");
    }

    public KNOTEN knotenGeben(int position)
    {
        KNOTEN k = null;
        if (position<1 || position<KnotenAnzahlBestimmen())
        {
            System.out.println("Falsche Eingabe");
        }
        else
        {   
            k=erster;
            for(int i=0;i<position;i++)
            {
                k=k.nächstenGeben();
            }
            return k;
        }
        return k;
    }

    public void obenEntnehmen()
    {
        if (KnotenAnzahlBestimmen()==0)
        {
            System.out.println("Keine Knoten vorhanden");
        }
        erster = erster.nächstenGeben();
    }
    public void obenEinfügen(PERSON operson)
    {
        operson.PERSON();
        oknoten = new KNOTEN
        
        
       oknoten.inhaltSetzen(oknoten)
       oknoten.nächstenSetzen(erster)
       oknoten = oknote
}