import java.awt.* ;
import javax.swing.* ;
import java.awt.event.ActionEvent ;
import java.awt.event.ActionListener ;
import javax.swing.Timer ;

public class BoomDemoRevisit extends JFrame implements ActionListener {
    int  dotHeight = 15,            
    dotWidth = 15,
    x = 255 ,
    x_coord[] = new int[8],
    y_coord[] = new int[8];

    private Timer timer = new Timer ( 3 , this ) ;

    BoomDemoRevisit ( ) {
        setSize ( 500, 500 ) ; 
        timer.start ( ) ;
    }

    public static void main ( ) {
        BoomDemoRevisit boom = new BoomDemoRevisit ( ) ;
        boom.initObjects ( ) ;
        boom.setVisible ( true ) ;
        boom.setBackground( new Color ( 255, 255, 255 ) ) ;
    }

    private void initObjects ( ) {
        for ( int i = 0; i < 8; i++)
        {
            x_coord[i] = 250;
            y_coord[i] = 250;
        }
    }

    public void drawShape(Graphics g, Color color, String shape, int x, int y) {
        g.setColor(color);
        switch (shape) {
            case "oval":
            g.fillOval(x, y, dotHeight, dotWidth);
            break;
            case "rect":
            g.fillRect(x, y, dotHeight, dotWidth);
            break;
            default:
            break;
        }
    }

    public void motion () {
        x_coord[0]++ ; 
        y_coord[0] = x_coord[0] ; 

        x_coord[1]-- ; 
        y_coord[1] = x_coord[1] ;
        x-- ;

        x_coord[2] = 255;
        y_coord[2]++;

        x_coord[3] = 255;
        y_coord[3]--;

        x_coord[4]++;
        y_coord[4] = 255;

        x_coord[5]--;
        y_coord[5] = 255;

        x_coord[6]++;
        y_coord[6] = 500 - x_coord[6];

        x_coord[7]--;
        y_coord[7] = 500 - x_coord[7];
    }

    public void paint (Graphics g) {

        if ( x_coord[0] == 500) {
            initObjects ( ) ;
            motion ( ) ;
            x = 255 ;
        }

        g.setColor ( new Color ( 51, 153, 255 ) ) ;
        g.fillRect ( 0, 0, getSize ( ).width, getSize ( ).height ) ;
        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[0], y_coord[0]);
        x_coord[0];
        y_coord[0];

        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[1], y_coord[1]);
        x_coord[1];
        y_coord[1];

        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[2], y_coord[2]);
        x_coord[2];
        y_coord[2];

        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[3], y_coord[3]);
        x_coord[3];
        y_coord[3];

        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[4], y_coord[4]);
        x_coord[4];
        y_coord[4];

        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[5], y_coord[5]);
        x_coord[5];
        y_coord[5];

        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[6], y_coord[6]);
        x_coord[6];
        y_coord[6];

        drawShape(g,new Color( 255, 255, 0), "rect", x_coord[7], y_coord[7]);
        x_coord[7];
        y_coord[7];

    }
    public void actionPerformed ( ActionEvent e ) {
        repaint ( ) ; 
    }
}
