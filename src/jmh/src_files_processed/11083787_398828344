import java.util.Arrays; 
public class Conversion
{
    static int placeholder1; 
    static int placeholder2; 
    static int counter; 
    static int binNum; 
    static int InputNum;
    static int InputBase; 
    static int binArray [];
    static String hexArray[]; 

    
    public static void getInput(int x, int c)
    {
        InputNum = x; 
        InputBase = c; 
    }
    
    public static void getcounter() 
    {
        placeholder1 = InputNum; 
        if (InputBase == 2)
        {
          do{
            placeholder1 = placeholder1 / 2; 
            counter++; 
            
            } while (placeholder1 > 0);  
            binArray = new int[counter];
        }
        
        if (InputBase == 8)
        {
          do{
            placeholder1 = placeholder1 / 8; 
            counter++; 
            
            } while (placeholder1 > 0);  
            binArray = new int[counter];
        }
        
        if (InputBase == 16)
        {
          do{
            placeholder1 = placeholder1 / 16; 
            counter++; 
            
            } while (placeholder1 > 0);  
            binArray = new int[counter];
        }
    }
    
    public static void Conversion()
    {
        placeholder2 = InputNum; 
        
        if (InputBase ==2) 
        {
          for(int i = 0; i < counter; i++)
          {
            binNum = placeholder2 % 2; 
            placeholder2 = placeholder2 / 2; 
            binArray[i] = binNum; 
          
          }
        }
        
        if (InputBase ==8) 
        {
          for(int i = 0; i < counter; i++)
          {
            binNum = placeholder2 % 8; 
            placeholder2 = placeholder2 / 8; 
            binArray[i] = binNum; 
          
          }
        }
        
         if (InputBase ==16) 
        {
          for(int i = 0; i < counter; i++)
          {
            binNum = placeholder2 % 16; 
            placeholder2 = placeholder2 / 16; 
             if (binNum <10)
             {
                 hexArray[i] = ""+binNum); 
             }
             
          
          }
        }
        
    }
    
    public static void printArray()
    {
        if (InputBase == 2) 
        {
            System.out.print("The binary output of " + InputNum + " is ");
            for (int j = binArray.length -1; j >= 0; j--) 
            {
               System.out.print(binArray[j]); 
            }
        }
        
        if (InputBase == 8) 
        {
            System.out.print("The octal output of " + InputNum + " is ");
            for (int j = binArray.length -1; j >= 0; j--) 
            {
               System.out.print(binArray[j]); 
            }
        }
      
    }
    
    public static void getConversion()
    {
        getcounter(); 
        Conversion(); 
        printArray(); 
    }
    
   
}

    