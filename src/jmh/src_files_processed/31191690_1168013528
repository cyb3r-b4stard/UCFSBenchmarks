

public class Array
{
    boolean kino[int][int];
    int areihenx;
    int areiheny;

    
    public Array()
    {
        
    }

    
    public void initKino(int reihenx, int reiheny)
    {
      areihenx = reihenx;
      areiheny = reiheny;
      boolean kino [][] = new boolean [areihenx][areiheny];
    }
    public void setSitz (int reihenx, int reiheny)
    {
        kino[reihenx][reiheny] = true;
    }
    public boolean getSitz (int reihenx, int reiheny)
    {
        return kino[reihenx][reiheny];
    }
}