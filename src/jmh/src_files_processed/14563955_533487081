public class Chapter10
{
    public static String capitalize(String name)
    {
        String firstLetter = name.substring(0, 1); 
        String restOfName = name.substring(1);
        return name = firstLetter.toUpperCase() + restOfName.toLowerCase();
    }

    public static boolean isPalindrome(String word)
    {
        int length = word.length();
        if(length <= 1)
            return true;
        else
        {
            char firstLetter = word.charAt(0);
            char lastLetter = word.charAt(length - 1);
            do{
            isPalindrome(word.substring(word.indexOf(firstLetter + 1), word.indexOf(lastLetter)));
        }while(firstLetter == lastLetter);
    }
}   