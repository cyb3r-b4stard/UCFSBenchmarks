public static void iniciarJuego(){  

for (int i = 0; i < palabra.length(); i++) {
palabra_ori[i] = palabra.charAt(i);
palabra_aux[i] = '_';
palabra = a[select];
}
limpiarPalabraAux();
char letra;
do {

System .out.println("\n");
{for (char l : palabra_aux) {
