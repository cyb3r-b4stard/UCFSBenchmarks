    /**
     * @brief Crée un set de données bidon pour tester l'affichage
     * @return un tableau 2D contenant 3 paires de données
     */   
    private static double[][] creeExempleBidon() {

        Random monRand = new Random();
        double[][] data = new double[2][3]; 
        double xs = 0.0;
        double delta_x = 0.1;
        
        for(int i=0;i<3;i++){
			data[0][i] = xs;
			xs += delta_x;
			data[1][i] = monRand.nextDouble();
		}
        
        return data;

    }
    
