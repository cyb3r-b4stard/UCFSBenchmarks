
/**
 * 
 */
public class InputForYou
{
    public static void main(String[] args)
    {
        Scanner scan = new Scanner(System.in); 
        System.out.print("What state do you live in: ");
        String state = scan.next();

        if (state.equals("New Mexico"))
        {
             System.out.print("It is awfully hot there");
        } 
        else if ( state.equals("New York"));
        {
           System.out.print("I do not like crowds");
        }
        else
        {
            System.out.print("You should come to California");
        }

        System.out.print("Enter a double: "); 

        double dNumber = scan.nextDouble();  

        System.out.print("Enter an integer: ");

        int intNumber = scan.nextInt(); 
        if (!(intNumber=0))
        {
            double number= dNumber/intNumber;
            System.out.printf("The number is %.2f\n", number);

        }
        else 
        {
            System.out.print("Can not divide by 0");
        }

    }
}