/* * #### ##### ##### ## ########### ## ### ####### ##### ##### ## ### ####. * ## ## #### ## ######### ######## ## #### ### ##### ##. * */class CommandWords{    private final String validCommands =         "go quit help kill";    /**     * Constructor - initialise the command words.     */    public CommandWords()    {    }    /**     * Check whether a given String is a valid command word.      * Return true if it is, false if it isn't.     **/    public boolean isCommand(String aString)    {        return validCommands.indexOf(aString) >= 0;    }    /*     * Print all valid commands to System.out.     */    public void showAll()     {        System.out.println(validCommands);    }}