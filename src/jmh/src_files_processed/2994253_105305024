import java.util.Random;
public class TovarenNaTetrominy
{
    private int aNahodny = Random(7);
    
    public Tetromin vytvorCiarku(int paX, int paY)
    {   
        return new Tetromin(new boolean[][]{
                {true},
                {true},
                {true},
                {true}
            },paX,paY);
    }

    public Tetromin vytvorEsko(int paX, int paY)
    {
        return new Tetromin(new boolean[][]{
                {false, true, true},
                {true, true, false}          
            },paX,paY);
    }

    public Tetromin vytvorZetko(int paX, int paY)
    {
        return new Tetromin(new boolean[][]{
                {true, true, false},
                {false, true, true}
            },paX,paY);
    }

    public Tetromin vytvorElko(int paX, int paY)
    {
        return new Tetromin(new boolean[][]{
                {true, false},
                {true, false},
                {true, true}
            },paX, paY);
    }

    public Tetromin vytvorHokejku(int paX, int paY)
    {
        return new Tetromin(new boolean[][]{
                {false, true},
                {false, true},
                {true, true}
            },paX, paY);
    }

    public Tetromin vytvorTecko(int paX, int paY)
    {
        return new Tetromin(new boolean[][]{
                {true, true, true},
                {false, true, false}
            },paX, paY);
    }

    public Tetromin vytvorKocku(int paX, int paY)
    {
        return new Tetromin(new boolean[][]{
                {true, true},
                {true, true}
            },paX, paY);
    }

    public Tetromin vytvorNahodne(int paX, int paY)
    {
        Random nahodny = new Random
        
    }
}