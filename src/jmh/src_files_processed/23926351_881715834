public class Persona
{
    private int experiencia;
    private String profesion;
    private int nuevaExperiencia;
    private String nuevaProfesion;
     /**
     * Constructor de la clase persona
     */
    public Persona()
    {
        this.experiencia=3;
        this.profesion= "ingeniero";
    }
   /**
     * Constructor de la clase persona sin parametros
     * @param int nuevaExperiencia
     * @param int nuevaProfesion
     */
    public Persona(int nuevaExperiencia, String nuevaProfesion)
    {
        setExperiencia(nuevaExperiencia);
        setProfesion(nuevaProfesion);
    }
    /**
     * Accesadores de la Clase Persona (Experiencia)
     */
    public int nuevaExperiencia()
    {
        return this.experiencia;
    }
     /**
     * Mutador de la clase persona (Profesion)
     */
    public void setProfesion(String nuevaProfesion)
    {
        if (nuevaProfesion.equals("ingeniero") || nuevaProfesion.equals("Ingeniero") || nuevaProfesion.equals("ingeniera")|| nuevaProfesion.equals("Ingeniera"))
        {
            System.out.println("No se permita la profesion que usted a ingresado. Reintente nuevamente");
        }
        else
        {
            this.profesion=nuevaProfesion;
        }
    }
    /**
     * Mutador de la clase persona (Profesion)
     */
    public void setExperiencia(int experiencia)
    {
        if (int experiencia=3)
        {
            System.out.prinln("")
        }
    }
    
}
    
    
   
}