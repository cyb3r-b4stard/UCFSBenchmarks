import java.util.Scanner;

public class Advice {
    public static void main(String args[]) {
        Scanner IntegerScanner = new Scanner(System.in);
        Scanner Input = new Scanner(System.in);
        Scanner StringScanner = new Scanner(System.in);

        String adviceChoice = "";
        boolean advieChoices = true

        
        System.out.println("Would you like some advice?");
        System.out.println("Enter 'Y' for yes or 'N' for no");
        adviceChoice = StringScanner.nextLine();

        if (adviceChoice = 'Y'){
            System.out.println("Always know where your towel is.");
        }
        else{
            System.out.println("Your life is going well - keep it up !");
        }
    }
}