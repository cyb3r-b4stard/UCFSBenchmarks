import java.util.Scanner;

public class PercentPassing {
    public static void main (String[] args)
    {
        double a;
        double c;
        double d;
        
        Scanner input = new Scanner (System.in);
        
        do {
            System.out.println ("Enter a your grade");
            a = input.nextDouble ();
            c = 0
        } while (a <1000); {
            c+=1;
            d = a/c;
            
            System.out.println ("Average grade above 70:" +d);
        }
    }
    
}
    
    
        
        
        
        
        
        
        
        
        