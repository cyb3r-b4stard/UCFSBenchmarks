
/**
 * #### ####### #### ####### ## ### ###### ## ########### 
 * 
 * @###### #### ######
 * @####### ##/##/##
 */
public class RGB2Hex
{
        private int red;
        private int green;
        private int blue;
        private String hexRed;
        private String hexGreen;
        private String hexBlue;
        private String hexColour;

    /**
     * Constructor for objects of class RGB2Hex
     */
    public RGB2Hex(int myRed, int myGreen, int myBlue)
    {
        red = myRed;
        green = myGreen;
        blue = myBlue;
       
    }

    /**
     * this converts my RGB value to a hexidecimal
     * An example of a method - replace this comment with your own
     */
    public void convertNumber()
    {
    hexRed = Integer.toHexString(red);
    hexGreen = Integer.toHexString(green);
    hexBlue = Integer.toHexString(blue);
    }
    /**
     * this method joins my numbers together to get the hex colour 
     * 
     */
    public void joinNumbers()
    {
        hexColour = hexRed + hexGreen + hexBlue;
    }
    
    /**
     * 
     */
    public void printResults()
{
        System.out.println("my red RGB value is : " + red);
        System.out.println("my green RGB value is : " + green);
        System.out.println("my blue RGB value is : " + blue);
        System.out.println("my Hexideciaml number is : " + hexColour);
}