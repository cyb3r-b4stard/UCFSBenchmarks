public class Vida{
    private int anoNascimento;
    public int anoAtual = 2014;

    public void setAnoNascimento(int anoNascimento){
        this.anoNascimento = anoNascimento;
    }

    public int getAnoNascimento(){
        return this.anoNascimento;
    }
    public int calcularIdade(){
        return(this.anoNascimento)-this.anoAtual;
    }

    public int calcularEmMeses(){
        return(this.anoNascimento - this.anoAtual)*12;
    }

    public int calcularEmSemanas(){
        return(this.anoNascimento - this.anoAtual)*7*30*12;
    }

    public int calcularEmDias(){
        return(this.anoNascimento - this.anoAtual)*30*12;
    }
    public int calcularEmMinutos(){
        return(this.anoNascimento - anoAtual)60*60*12
    }

    public int calcularEmHoras(){
        return(this.anoNascimento - this.anoAtual)*24*12;
    }

    public int calcularEmSegundos(){
        return(this.anoNascimento - this.anoAtual)*60*12;
    }
}

    