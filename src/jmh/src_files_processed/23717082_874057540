import java.util.*;
import java.lang.*;
import java.io.*;
public class Fines
{
    public static void main(String []args)
    {
    System.out.print("Enter name (Last, First) and Social Security Number (###-##-####): ");
    Scanner sc = new Scanner(System.in);
    String input = sc.nextLine();
    String lastName = input.();
    String firstName = input.next();
    int s1 = sc.nextLine();
    int s2 = sc.nextLine();
    int s3 = sc.nextLine();

    System.out.println();
    
    Scanner input2 = new Scanner(System.in);
    System.out.print("Enter the title of the book: ");
    String booktitle = input2.nextLine();
    System.out.println();
    
    Scanner input3 = new Scanner(System.in);
    System.out.print("Enter the date checked out (mm/dd/yyyy): ");
    String date = input3.nextLine();
    System.out.println();
    
    String dayslate = "35";
    System.out.println("Day late: " + dayslate);
    
    String dailyfine = "0.32";
    System.out.println("Daily fine: " + dailyfine);
    System.out.println();
    System.out.println();
    
    double totalfine = Integer.parseInt(dayslate) * Double.parseDouble(dailyfine);
    
    System.out.print("To: " + lastName + "," + firstName + "           ");
    System.out.println("Account: " + lastName + "123");
    System.out.println("From: Ruby");
    System.out.println("Subject: Overdue Notice");
    System.out.println("==================================");
    System.out.println(booktitle + "was checked out on: " + date);
    System.out.println("This book is currently " + dayslate + " days late.");
    System.out.println("Your fine has accumulated to: " + totalfine);
    }
}