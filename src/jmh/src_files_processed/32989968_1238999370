import java.awt.*;
import javax.swing.*;

public class BedienLeiste extends JPanel
{   
    private JTextField speedAnzeige = new JTextField("25",10);
    private JScrollBar scroll=new JScrollBar(JScrollBar.HORIZONTAL,25,10,0,50);
    private JButton butt1=new JButton("START");
    private JButton butt2=new JButton("STOP");
    private JButton butt3=new JButton("ENDE");
    private JLabel label1=new JLabel("Drehgeschwindigkeit der Grafik");
    private JLabel label2=new JLabel("Starten der Bewegung");
    private JLabel label3=new JLabel("Stoppen der Bewegung");
    private JLabel label4=new JLabel("Programmende");
    private GrafikPanel gp;

    public BedienLeiste(GrafikPanel gp)
    {
        this.gp=gp;
        setLayout(new GridLayout(9,1,20,30));
        Meinlistener horcher1=new Meinlistener();
       
        butt1.addActionListener(horcher1);
        butt2.addActionListener(horcher1);
        butt3.addActionListener(horcher1);
        add(label1);
        add(scroll);
        add(speedAnzeige);
        add(label2);
        add(butt1);
        add(label3);
        add(butt2);
        add(label4);
        add(butt3);
    }
    class Meinlistener implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
            if(e.getSource()==butt1)
            {
                gp.startMove(40);
                speedAnzeige.setText("40");
            }
            else if(e.getSource()==butt2)
            gp.stopMove();
            else
            gp.ende();
        }
    }