import java.util.Scanner;
public class Student{
 String Name;
 String Surname;
 String Class;
 String Language;
 int indexNumber;
 int yearOfBirth;
 int[] markList = new int [10];
 int i = 0;
 String[] subjectList = new String [10];
 Scanner input = new Scanner (System.in);
 
 public void enterStudent(){
   System.out.println("Enter your Name:");
   this.Name = (input.next());
   System.out.println("Enter your Surname:");
   this.Surname = (input.next());
   System.out.println("Enter your Language:");
   this.Language = (input.next());
   System.out.println("Enter your Year of Birth:");
   this.yearOfBirth());
   System.out.println("Enter your Class:");
   this.Class = (input.next());    
   System.out.println("Enter your Index Number:");

   
   subjectList[0] = " Maltese: ";
   subjectList[1] = " Maths: ";
   subjectList[2] = " English: ";
   subjectList[3] = " Italian: ";
   subjectList[4] = " Geography: ";
   subjectList[5] = " Religion: ";
   subjectList[6] = " History: ";
   subjectList[7] = " Social Studies: ";
   subjectList[8] = " Business Studies: ";
   subjectList[9] = " Computer Studies: ";
    
   for(int i=0;i<10;i++){
    System.out.println ("Enter mark of " + subjectList[i]);
    this.markList[i] = (input.nextInt());
   }
 }
 
 public void viewStudent(){
   System.out.println ("Name : "+ this.Name);
   System.out.println ("Surname : "+ this.Surname);
   System.out.println ("Class : "+ this.Class);
   System.out.println ("Language : "+ this.Language);
   System.out.println ("IndexNumber : "+ this.indexNumber);
   System.out.println ("YearOfBirth : "+ this.yearOfBirth);
   System.out.println ("Age : " + this.getAge()); 
   System.out.println ("Highest : " + this.getHighest()); 
   System.out.println ("Lowest : " + this.getLowest()); 
   System.out.println ("Average : " + this.getAverageMarks()); 
    
   for(i=0;i<10;i++){
    System.out.println ("Mark of " + subjectList[i] + this.markList[i]);
   }
 }
 
 public void MainMenu(){
   System.out.println (" 1.Enter Student: ");
   System.out.println (" 2.View Student: ");
   System.out.println (" 3.Get Student Satistics: ");
   System.out.println (" 4.Exit: ");
   System.out.println (" Enter your choice ");
   int choice = input.nextInt();
   switch (choice) { 
           case 1: {
                   this.enterStudent();
                     break;
                   } 
           case 2: {
                    this.viewStudent();
                     break;
                   }
           case 3: {
                    this.showStudentStatistics();
                     break;
                   }
           case 4: {System.out.println (" Quitting ");
                     break;
                   }  
   }
 }
 
 public void showStudentStatistics(){
   System.out.println (this.getHighest());
   System.out.println (this.getLowest());
   System.out.println (this.getAverageMarks());
 }
 
 public int getAge(){
   int age = 2016 - this.yearOfBirth;
   return age;
 }  
 
 public int getHighest(){
   int max = 0;
    for(int i=0;i<10;i++){
     if(this.markList[i]>max){
      max = this.markList[i];
    }
    }
    return max;
 }

 public int getLowest(){
   int Lowest = 100;
   for(int i=0;i<10;i++){   
    if(this.markList[i]<Lowest)
     Lowest = this.markList[i];
    }
    return Lowest;
 }
 public double getAverageMarks(){
   int t= 0 ;
    for(int i=0;i<10;i++){
      t = t + this.markList[i];
    }
    double average = t/10;
    return average;
 }
}