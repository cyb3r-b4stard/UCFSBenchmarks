import sum.kern.*;

public class Buntball 
extends Ball
{
    
    int zFarbe;

    public Buntball(double pXPos, double pYPos, double pWinkel, int pRadius, Tisch pTisch,int pFarbe)
    {
        super (double pXPos, double pYPos, double pWinkel, int pRadius, Tisch pTisch);
        this.zFarbe=pFarbe;
        hatStift.setzteFarbe(pFarbe);
        
    }
       
    public void zeichne()
    {
        hatStift.setzteFarbe(Farbe.ROT);
    }
    
   
}
