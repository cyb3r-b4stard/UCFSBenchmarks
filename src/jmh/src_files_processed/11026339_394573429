import java.util.*;

public class Main{
    
public static void main(){
   Scanner entrada;
   entrada = new Scanner(System.in);
    String c1,c2;
    System.out.println("Quem sao os candidatos");
    c1 = entrada.nextLine();
    c2 = entrada.nextLine();
    
    UrnaEletronica urna;
    urna = new UrnaEletronica(c1,c2);
    
    boolean votando = true;
    
    while ( votando) {
        System.out.println ("1.+ c1/n"
                            +"2.+ c2 + \n"
                            +"5.Encerrar votacao\n"
                            +"opção: ");
                            
                            int opcao;
                                opcao = entrada.nextInt();
                                
      if (opcao == 5){
          votando = false;
        }
        else{
            urna.votar(opcao);
        }
          
}
    System.out.println("\n\t0 vencedor foi: " + urna.getVemcedor() )
    
    
    
 
   }
}
   