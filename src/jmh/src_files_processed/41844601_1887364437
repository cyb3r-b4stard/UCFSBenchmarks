public class RefrigeratorDriver
{
    public static void main (String [] args)
    {
        Refrigerator refrigerator1 = new Refrigerator(true, 40.0, 65, "Kenmore", false);
        Refrigerator refrigerator2 = new Refrigerator(true, 35.0, 60, "LG", false);
        Refrigerator refrigerator3 = new Refrigerator(false, 38.0, 70, "KitchenAid", true);
        Refrigerator refrigerator4 = new Refrigerator(false, 40.0, 70, "Whirlpool", true);

        public void sortRefrigerators()
        {
            for (int i = 0; i < refrigerator.length - 1; i++)
            {
                int minIndex = i;
                for (int j = i+1; J < refrigerator.length; j++)
                {
                    if (refrigerator[j].compareTo(refrigerator[minIndex]) < 0)
                    {
                        minIndex = j;
                    }
                }
                String temp = refrigerator[i];
                refrigerator[i] = refrigerator[minIndex];
                refrigerator[minIndex] = temp;

            }

            System.out.println(refrigerator1);
            System.out.println(refrigerator2);
            System.out.println(refrigerator3);
            System.out.println(refrigerator4);
        }
    }