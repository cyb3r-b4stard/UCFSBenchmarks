import javax.swing.*;

public class Point
{
    private int x;
    private int y;
    
    public Point(String nom){
        String str;
        str=JOptionPane.showInputDialog(nom+"Saisie d'un Entier X: ");
        x=Integer.parseInt(str);
        str=JOptionPane.showInputDialog(nom+"Saisie d'un Entier Y: ");
        y=Integer.parseInt(str);
    }
    
    public void affiche(){
        System.out.println( "Coordonnee de x et y"+x+" "+y);
    }
    
    public void getx(){
        return x;
    }
    
    public void gety(){
        return y;
    }