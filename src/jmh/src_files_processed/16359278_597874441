/**
 * 
 */
import java.util.Scanner;
import java.util.ArrayList;
import java.util.Random;
import java.io.File;
import java.io.IOException;
public class BenRiordanCipher
{
    private static ArrayList<Character> alphabet = new ArrayList<Character>();
    Random rng = new Random();
    public ArrayList<Character> cipherAlphabet(ArrayList<Character> realAlphabet)
    {
        ArrayList<Character> alphabet = new ArrayList<Character>();
        int c;
        for (int n=0; n<=26; n++)
        {
            c = rng.nextInt(realAlphabet.size() - 1);
            alphabet.add(realAlphabet.get(c)));
            realAlphabet.remove(realAlphabet.get(c));
        }
        return alphabet;
    }
    
    public ArrayList<Character> realAlphabet()
    {
        for (int n=0; n<=26; n++)
        {
            alphabet.add((char)(97 + n));
        }
        return alphabet;
    }
    
    public void printArray(ArrayList<Character> alphabet)
    {
        String s = "";
        for (int n = 0; n<=26; n++)
        {
            char c = alphabet.get(n);
            System.out.println(c);
            s+= c;
        }
        System.out.println(s);
    }
    
}