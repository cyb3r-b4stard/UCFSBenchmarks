import java.util.Scanner;
public class TDEE
{
    public static void main(String [] args)
    {
        Scanner in = new Scanner(System.in);

        System.out.print("Please enter your name: ");
        String name = in.nextLine();
        System.out.print("Please enter your BMR:" );
        double basalMR = in.nextDouble();
        System.out.print("Please enter your gender (M/F): ");
        String gender = in.next();
        System.out.println();

        System.out.println("Select Your Activity Level");
        System.out.println("[A] Resting (Sleeping, Reclining)");
        System.out.println("[B] Sedentary (Minimal Movement)");
        System.out.println("[C] Light (Sitting, Standing)");
        System.out.println("[D] Moderate (Light Manual Labor, Dancing, Riding Bike)");
        System.out.println("[E] Very Active (Team Sports, Hard Manual Labor)");
        System.out.println("[F] Extremely Active (Full-time Athelete, Heavy Manual Labor)");
        System.out.println();
        System.out.print("Enter the letter corresponding to your activity level: ");
        String choice = in.next();
        System.out.println();

        double activityFactor;
         if(choice.equalsIgnoreCase("A") && (gender = 'M') 
        {
        activityFactor = 1.0;  
        }
        else if(choice.equalsIgnoreCase("B") ) 
        {
            System.out.println("Congratz! You chose B for BMR!");
        }
        else if (choice.equalsIgnoreCase("C") ) 
        {
            System.out.println("Congratz! You chose C for Healthy Eating!");
        }
        else if (choice.equalsIgnoreCase("D") ) 
        {
            System.out.println("Congratz! You chose D for Food Pyramid!");
        }
        else if (choice.equalsIgnoreCase("E") ) 
        {
            System.out.println("Congratz! You chose E for Firness Training!");
        }
        else 
        {
            System.out.println("Your awnser is invalid, you have failed!");
        }


        double tDEE = basalMR * activityFactor;

        System.out.println("Name: " + name + "\t\tGender: " + gender);
        System.out.println("BMR: " + basalMR + " calories "+ "\t\tActivity Factor: " + activityFactor);
        System.out.println("TDEE: " + tDEE + " calories ");

    }
}
