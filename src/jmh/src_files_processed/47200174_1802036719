import java.util.*;
public class Ch7SuperheroExp4
{
    public static void main(String[] args)
    {
        String superHero[] = new String[5];
        superHero[0] = "";
        superHero[1] = "";
        superHero[2] = "";
        superHero[3] = "";
        superHero[4] = "";
        Scanner input = new Scanner(System.in);
        System.out.println("Enter these superheroes out of order:");
        System.out.println("Flash, Green Arrow, Superman, Spiderman, Green Lantern.");
        for (int a = 0; a < superHero.length; a++)
           {
               System.out.print("Enter superhero number " + (a + 1) + ": ");
               superHero[a] = input.nextLine();
               }
        System.out.println();
        System.out.println("List as entered: ");
        for (String orig: superHero)
        {
            System.out.println(orig);
            }
        System.out.println();
        String temp = "";
        for (int i = 0; i < superHero.length; i++) 
           {
             for (int b = i + 1; b < superHero.length; b++)
            {
                if (superHero[i].compareToIgnoreCase(superHero[b]) > 0)
                   {
                   temp = superHero[i];
                   superHero[i] = superHero[b];
                   superHero[b] = temp;
                    }
            }
        }
        System.out.println("Selection sorted list: ");
        for (int j = 0; j < superHero.length; j++)
        { 
            System.out.println(superHero[j]);
            }
        System.out.println();
        boolean match = true;
        String temp2 = "";
        int x = 0;
        while (match)
        {
            match = false;
            for (x = 0; x < (superHero.length); superHero.length - 1)
            {
                if (superHero[x].compareToIgnoreCase(superHero[x - 1]) > 0)
                {
                    temp2 = superHero[x];
                    superHero[x] = superHero[x - 1];
                    superHero[x - 1] = temp2;
                    match = true;
                }
            }
        }
        System.out.println("Bubble sorted list: ");
        System.out.println(superHero[x]);
        System.exit(1);
       }
}