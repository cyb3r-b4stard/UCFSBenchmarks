import java.util.*;
import java.util.Random;
public class GameProjectDriver
{
    public static void main(String[] args)
    {
        String playerName;
        int playerAge;
        String ageComment = "";
        String ageComment2 = "";
        String playerSect;
        int start;
        Scanner console = new Scanner(System.in);
        System.out.println("Welcome to the Game, Alpha Version 1.0");
        System.out.println("What would you like to do?");
        System.out.println("[1] Start the game \n[2] Quit the game");
        start = console.nextInt();
        console.nextLine();
        if (start == 1)
        {
            System.out.println("Loading the game... Please wait.");
            System.out.println();
            Summary();
            System.out.println();
            System.out.println("Time to create your very own character!");
            CharacterCreation player = new CharacterCreation();
            player.setcharName("Ozpin");
            player.setcharAge(30);
            player.setcharClass("Headmaster");
            playerName = player.getcharName();
            playerAge = player.getcharAge();
            playerSect = player.getcharClass();
            System.out.println("First off, what is your character's name?");
            playerName = console.nextLine();
            player.setcharName(playerName);
            System.out.println("So, " + playerName + ", huh? Okay, how about their age?");
            playerAge = console.nextInt();
            player.setcharAge(playerAge);
            console.nextLine();
            if (15 <= playerAge < 17)
            {
                ageComment = "young";
                ageComment2 = "That's very ambitious for a child. Unfortunately, the world is not the same as a fairy tale.";
            }
            else if (17 <= playerAge < 30)
            {
                ageComment = "young";
                ageComment2 = "Quite a bit late to the party, don't you think?";
            }
            else if (30 <= playerAge < 50)
            {
                ageComment = "old";
                ageComment2 = "Are you even sure you can handle this stress? You already have enough in your life.";
            }
            else if (50 <= playerAge < 70)
            {
                ageComment = "that old";
                ageComment2 = "You're best off establishing their retirement plan as it is now; no guarantees their insurance may cover this whole \"adventuring\" thing kids are up to these days.." 
            }
            System.out.println("Your character is " + playerAge + "? That's a rather " + ageComment + " character. " + ageComment2 + " But hey, who am I to judge? Moving on...");
            System.out.println("Now, your character's occupation; what they do for a living. There are a few listed below, so feel free to think it over and choose wisely!");
            System.out.println("Your Class choices: Huntsman, Pioneer, Protector, Marksman.");
        }
        else if (start == 2)
        {
            System.out.println("The game has been terminated, have a nice day.");
        }
        else
        {
            System.out.print('\u000C');
        }
    }
    public static void Summary()
    {
        System.out.println("First line of monologue.");
        System.out.println("Second line of monologue.");
        System.out.println("Third line of monologue.");
        System.out.println("Fourth line of monologue.");
        System.out.println("Fifth line of monologue.");
        System.out.println("Sixth line of monologue.");
        System.out.println("Seventh line of monologue.");
        System.out.println("Now, you assume the role of another young one, whom will traverse the world as you see fit.");
    }
}