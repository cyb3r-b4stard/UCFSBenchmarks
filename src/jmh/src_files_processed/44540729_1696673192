import java.util.*;
public class PalindromeWord
{
    public static void main(String args[])
    {
        Scanner in = new Scanner(System.in);
        int i,l;
        String st,st1="",st1="";
        char ch;
        System.out.println("enter a string");
       st=in.nextLine();
       l=st.length();
       for(i=0;i<l;i++)
       {
           ch=st.charAt(i);
           st1=st1+ch;
        }
        Systm.out.println("NEW PALINDROME WORD : "+st+st1)
    }
}