public class MiddleAverage {
	public static void main(String[] args) {
		System.out.print("Value: ");
		int value = In.nextInt();
		int sum = 0;
		int counter = 0;
		int max = 1;
		int min = 1; 
		
		if (value >= max)
		{max = value;}
		if (value == min)
		{min = value;}
		
		while (value!=-1)
		{ 
		    if (value >= max) max = value; 
		    if (value <= min) min = value;
		    if (value >0 && value != max && value !=min)
		    sum =+ value;
		    counter++;
		  
		    System.out.print("Value: ");
		    value = In.nextInt();
		  
		if (counter > 1)
		
		System.out.println("Middle average = " +((double)sum/counter);
}
		
	}
}