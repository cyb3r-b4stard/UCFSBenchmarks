public class Lab_5
{
    private int x;

    /**
     * Constructor for objects of class Lab_5
     */
    public Lab_5()
    {
        x = 0;
    }

    /**
     * a method to calculate the average of two integers. The result
     * should be an integer, rounded up.
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public int average(int first, int second)
    {
        int ave = 0;
        ave = first + second;
        ave = ave/2;
        return ave;
    }

    /**
     * Write a method to print two integers in the order lowest to highest.
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void order(int first, int second)
    {
        if (first > second){
            System.out.println("" + second + "\n" + first);
        } else {
            System.out.println("" + first + "\n" + second);
        }
    }

    public void order2(int first, int second){
        if(first>second)
            swap2(first,second);
        System.out.println("integers in order:");
        System.out.println(first);
        System.out.println(second);
    }

    public void swap2(int x, int y){
        int tmp=x;
        x=y;
        y=tmp;
    }

    public void order3(int first, int second){
        if(first>second)
            swap(first,second);
        System.out.println("integers in order:");
        System.out.println(first);
        System.out.println(second);
    }

    public void swap3(Student x, Student y){
        Student tmp=x;
        x=y;
        y=tmp;

    }

    public void swap2(Student x, Student y){
        Student tmp=new Student(x.getId(), x.getName(), x.getGpa());
        x.setId(y.getId());
        x.setName(y.getName());
        x.setGpa(y.getGpa());
        y.setId(tmp.getId());
        y.setName(tmp.getName());
        y.setGpa(tmp.getGpa());

    }