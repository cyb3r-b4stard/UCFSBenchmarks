import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;
public class stringLab
{
   public static void main(String[] args)
   {
       String inputString; 
       Scanner keyboard;
       int number; 
       char symbol; 
       boolean matches; 
       String testString; 
       
       keyboard=new Scanner(System.in);
       
       System.out.print("Enter a sentence: ");
       inputString= new FileReader("input.txt"));
       BufferedReader br = null;
 
		
       
       
       
       /**
        * C - a) Test the length of string
        * @return printout the length of string
        */
       number=inputString.length();
       System.out.println("*My string object has " + number + " characters."); 
       
       /**
        * C - b) print the first letter of the inputted sentence 
        * @return printout the first letter of the string 
        */
       symbol = inputString.charAt(0);
       System.out.println("*The first letter is: " + symbol + ".");
       
       /**
        * C- c) print the last letter of the inputted sentence 
        * @return printout last letter of string using charAt.
        * -To get the last letter you take the length (right now saved in number) and subtract one since we start
        * counting at 0. (number-1) gives you the last letter
        */
       symbol = inputString.charAt(number-1);
       System.out.println("*The last letter is: " + symbol + ".");
       
       /**
        * C- d) Print wether you sentence cintains the letter e
        * @return true if the string contains e, otherwise false
        */
    
       number= inputString.indexOf("e");
       if (number== -1) 
        {
            System.out.println("*The letter e does not exist in the inputted character.");
        }
        else
        {
            System.out.println("*The letter e does exist in the inputted character.");
        }
        
         /**
        * C- e) Print wether you sentence contains ay
        * @return true if the string contains ay, otherwise false
        */
       
       number= inputString.indexOf("ay");
       if (number== -1) 
        {
            System.out.println("*The character sequence ay does not exist in the inputted character.");
        }
        else
        {
            System.out.println("*The character sequence ay does exist in the inputted character.");
        }
       
        /**
         * C- f) Print the nummber of times that the letter "e" occurs in the inputted string of text. 
         */
        
        /**
         * C - g) Position of the last ocuence 'e' in your sentence
         * @return index of last occurence of e
         */
        number= inputString.lastIndexOf("e");
        System.out.println("*The last occurence of the letter 'e' in the inputted string is at position: " + number);
        
        /** 
         * C- h) Position of the second occurence of the letter 'e' in your sentence
         * @return index of the second occurence of the letter 
         */
        number=inputString.indexOf("e");
        number=inputString.indexOf("e", number+1);
        System.out.println("*The second occurence of the letter 'e' in the inputted stirng is at position: " + number);
        
        /**
         * C - i) add 'you know' to the end of the sentence using concat
         * @return add "you know" to string
         */
        testString = inputString.concat(" you know");
        System.out.println("*" + testString);
        
        /**
         * C - j) Prints completley uppercase
         */
        testString=inputString.toUpperCase();
        System.out.println("*" +testString);
        
        /**
         * C- k) Extract and print a substring of five characters from your sentence
         */
        testString=inputString.substring(0,5);
        System.out.println("* Substring of five characters: " + testString); 
        
        /**
         * C - i)Print string where all the letter 'a' are replaced with the letter x
         * 
         */
        testString=inputString.replace("1", "x");
        System.out.println("* Replace all values of a to x in the input string: " + testString);
        
        
   }
    
}