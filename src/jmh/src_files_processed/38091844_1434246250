public class digit
{
    public static void main (String[] args) {
      Scanner input = new Scanner (System.in);

    

    System.out.println("Please enter a thousand digit number:   ");

    int num1 = input.nextInt();

    

    


    int thousand = num1/1000;

    int hundredNum = num1%1000;

    int hundred = hundredNum/100;

    int tenNum = hundredNum%100;

    int tens = tenNum10;

    int ones = tenNum10 d;

    

    


    System.out.println("Thousand:  " + thousand);

    System.out.println("Hundreds:  " + hundred);

    System.out.println("Tens:  " + tens);

    System.out.println("Ones:  " + ones);
}
}