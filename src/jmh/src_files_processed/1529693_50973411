import java.util.Scanner;

public class Number17
{
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
        int tripCounter = 1;
        int miles;
        int gallons;
        int totalMiles = 0;
        int totalGallons = 0;
        System.out.println("How many miles did you go? (Press -1 to quit)");
        miles = input.nextInt();
        while (miles != -1)
        {
            totalMiles = totalMiles + miles;
            tripCounter = tripCounter + 1;
            
            System.out.println("Total miles: %d", totalMiles);
        }
        System.out.println("How many gallons did you use? (Press -1 to quit)");
        gallons = input.nextInt();
        while (gallons != -1)
        {
            totalGallons = totalGallons + gallons;
            System.out.println("Total gallons: %d", totalGallons);
            
    }
}