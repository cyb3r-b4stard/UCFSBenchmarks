import java.lang.String;
import java.lang.StringBuilder;
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Account
{ 
    public final static double DEPOSIT_FEE = 1.00;
    public final static double INITIAL_WITHDRAW_FEE = 2.00;
    public final static double STANDARD_WITHDRAW_FEE = 3.00;
    private String ID;
    private double balance;
    private int deposits;
    private int withdrawals;
    private double service;

    /**
     * Constructor for objects of class Account
     */
    
    public Account()
    {
        ID = "NONE_ENTERED";
        balance = 0.0;
        deposits = 0;
        withdrawals = 0;
        service = 0.0;
        }
    
    public Account(String accountID, double startingBalance)
    {
        ID = accountID;
        balance = startingBalance;
        deposits = 0;
        withdrawals = 0;
        service = 0.0;
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void get()
    {

    }

    /**
     * An example of a method - replace this comment with your own
     *
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y
     */
    public void set()
    {

    }

    /**
     * An example of a method - replace this comment with your own
     *
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y
     */
    public void dep(double amount)
    {

        balance += amount;
        deposits += 1;
        service += DEPOSIT_FEE;

    }

    /**
     * An example of a method - replace this comment with your own
     *
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y
     */
    public void wd(double amount)
    {
        balance -= amount;
        withdrawals += 1;
        if(withdrawals == 1)
            service += INITIAL_WITHDRAW_FEE;
        if(withdrawals == 2)
            service += INITIAL_WITHDRAW_FEE;
        if(withdrawals > 2)
            service += STANDARD_WITHDRAW_FEE;
    }

    /**
     * An example of a method - replace this comment with your own
     *
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y
     */
    public String toString()
    {
        StringBuilder info = new StringBuilder {"Account[ID="};
        info.append(account.ID);
        info.append(", balance=");        
        return "info";
    }

}