import java.util.*;
public class PracticalTest1{
    public static void main (String[] args){
        Scanner scan = new Scanner (Sytstem.in);
        System.out.println("Please enter runner first name, last name and 5 running time or # to the end.");
        
        String input = scan.nextLine();
        while(!input.equals("#")) {
            processLine(input);
            System.out.println("Please enter another records or # to end.");
            input = scan.nextLine();
    }
}
public static void processLine(String name){
    Scanner scn = new Scanner(name);
    String fname,lname;
    double rec1,rec2,rec3,rec4,rec5,ave;
    fname = scn.next();
    lname = scn.next();
    rec1 = scn.nextDouble();
    rec2 = scn.nextDouble();
    rec3 = scn.nextDouble();
    rec4 = scn.nextDouble();
    rec5 = scn.nextDouble();
    System.out.printf(fname + " " + lname + " " + (%.2f),ave);
    System.out.printLine();
}
}