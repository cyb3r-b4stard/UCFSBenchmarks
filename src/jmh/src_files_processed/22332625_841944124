import radorienteradTerminal.*;
import grafiskTerminal.*;
import grafiskTerminalDatabas.*;
import javax.swing.JFrame;
import javax.swing.JOptionPane;

/**
 * ########## ############## ####-#####
 * 
 * @###### ######### #########
 * @####### #.# ####-##-##
 */

public class MikroBanken
{
    /**
     * Öppnar en dialogruta där användaren får välja mellan att
     * skapa en en instans av klassen radorienteradTerminal.Terminal, 
     * grafiskTerminal.GUI eller grafiskTerminalDatabas.GUIDatabas
     * 
     * @param args används inte
     */
    
    import java.sql.SQLException;
    
    public static void main(String[] args) throws SQLException
    {
        JFrame frame = new JFrame();
        Object stringArray[] = { "Terminalfönster", "Grafiskt användargränssnitt" , "Grafiskt användargränssnitt med databas" };
        int val = JOptionPane.showOptionDialog(
            frame, 
            "Välj vilken typ av program", 
            "Val av program",
            JOptionPane.YES_NO_CANCEL_OPTION, 
            JOptionPane.QUESTION_MESSAGE, 
            null, 
            stringArray,
            stringArray[0]);
        
        if (val == JOptionPane.YES_OPTION)
        {
            new Terminal();
        }
        if (val == JOptionPane.NO_OPTION)
        {
            new GUI("Bank");
        }
        if (val == JOptionPane.CANCEL_OPTION)
        {
            new GUIDatabas("Bank");
        }
    }
}