

import static org.junit.Assert.*;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;

/**
 * ### #### ##### #########.
 *
 * @######  (#### ####)
 * @####### (# ####### ###### ## # ####)
 */
public class BrickTest
{
    /**
     * Default constructor for test class BrickTest
     */
    public BrickTest()
    {
    }

    /**
     * Sets up the test fixture.
     *
     * Called before every test case method.
     */
    @Before
    public void setUp()
    {
    }

    /**
     * Tears down the test fixture.
     *
     * Called after every test case method.
     */
    @After
    public void tearDown()
    {
    }

    @Test
    public void HeightTest()
    {
        Brick brick1 = new Brick(2, 2, 2);
        assertEquals(2.0, brick1.getHeight(), 0.1);
    }

    @Test
    public void VolumeTest()
    {
        Brick brick1 = new Brick(4, 4, 4);
        assertEquals(64, brick1.getVolume());
    }

    @Test
    public void WeightTest()
    {
        Brick brick1 = new Brick(5, 5, 5);
        assertEquals(, brick1.getWeight(), 0.1);
        assertEquals(125, brick1.getVolume());
        assertEquals(0.0, brick1.getWeight(), 0.1);
        assertEquals(125, brick1.getVolume());
        assertEquals(0.25, brick1.getWeight(), 0.1);
        assertEquals(, brick1.getWeight(), 0.1);
    }
}


