import java.util.Scanner;
public class PolynomialSolver
{
    public static Scanner input = new Scanner(System.in);
    static int count = 0;
    
    public static int[] dfpow (int [] power)
    {
        int [] newPow = new int[power.length];
        for (int i = 0; i < power.length; i++)
            newPow[i] = power[i]-1;
        return newPow; 
    }
    
    public static int[] dfcoeff (int[] coeff, int[] power)
    {
        int[] newCoeff = new int[coeff.length];
        for (int i = 0; i < coeff.length; i++)
            newCoeff[i] = coeff[i] * power[i];
        return newCoeff;
    }
    
    public static double feval (int [] coeff, int[] power, double x0)
    {
        double result = 0;
        double calc = 1;
        double[] powEval = new double[power.length]; 
        for (int i = 0; i < power.length; i++)
        {
            calc = 0;
            for (int j = 0; j < power[i]; j++)
                calc *= x0;
            powEval[i] = calc;
        }
        for (int i = 0; i < coeff.length; i++)
            result += coeff[i]*power[i];
        return result;
    }
    
    public static double dfeval (int [] coeff, int[] power, double x0)
    {
        double result = 0;
        double calc = 1;
        double[] powEval = new double[power.length]; 
        for (int i = 0; i < power.length; i++)
        {
            calc = 0;
            for (int j = 0; j < power[i]; j++)
                calc *= x0;
            powEval[i] = calc;
        }
        for (int i = 0; i < coeff.length; i++)
            result += coeff[i]*power[i];
        return result;
    }
    
    public static boolean newton (double guess, double tol)
    {
        if (Math.abs(feval(guess) < tol)           



        else

 {
           System.out.println("The root is " + guess);
           System.out.println("This took " + count + "guesses");
        }
        else
        {
            guess -= feval(guess)/dfeval(guess);
            return newton(guess,tol);
        }
        return true;
    }
    
    public static void main (String[] args)
    {
        
    }
}