import java.awt.*; 
public class BauenAnw
{
    private int x;

    public BauenAnw()
    {
    }
    
    
    FrmZeichnen hZf; 
    Kreis hSonne;   
    Kreis hSonne1;
    Dreieck hDach;
    Rechteck hWand;
    Rechteck hTuer;
    Quadrat hFenster1, hFenster2, hFenster3;
    /** Erzeugt ein neues Zeichenfenster und macht es sichtbar */
    
    public void zeichenFensterErzeugen ()
    {
        hZf = new FrmZeichnen();
        hZf.setVisible(true);  
        hZf.setTitle ("Zeichenfenster von Programm Baukasten 3") ;
    } 
    
    /** Erzeugt eine gelbe Sonne und zeichnet sie */
    public void sonneErzeugen ()
    { hSonne = new Kreis(hZf, 330, 50, 25, Color.YELLOW);
      hSonne.zeichnen();  
      hSonne1 = new Kreis(hZf, 100, 100, 30, Color.GREEN);
    }
    
    /** Bewegt die kreisfoermige Sonne um 10 Pixel nach rechts*/
    public void sonneBewegen ()
    {
      hSonne.loeschen();
      hSonne.setzePosition (hSonne.liesXPosition()+10, hSonne.liesYPosition());
      hSonne.zeichnen();
    } 
    
    /** Emtfernt das Fenster vom Bildschirm und aus dem Speicher */
    public void objekteEntsorgen ()
    { hZf.setVisible (false) ;
      hZf.setVisible (true) ;
      hZf.setTitle ("Zeichenfenster von Programm Baukasten 3") ;
      hZf.setSize (500, 350) ;
    }
    
    public void dachZeichnen()
    { hDach = new Dreieck(hZf, 100, 100, 100 Color.GRAY);
      hDreieck.zeichnen();  
      
    }
   
    /**Erstellt  Bausteine, zeichnet sie und ordnet si als Haus an*/
    public void hausZeichnen()
    { hWand = new Rechteck(hZf, 50, 250, 100, 100, Color.GRAY);
      hWand.zeichnen();  
      
    }
}