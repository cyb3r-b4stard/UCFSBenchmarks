import java.util.*;

public class Counter
{   public static void main(String[] args)
    {   new Counter();  }
        String sentence;
        String words;
    public Counter()
    {    
        sentence = readSentence();
        words(sentence);        
    }
    private String readSentence()
    {   System.out.print("Sentence: ");
        return In.nextLine();   }

    private int words(String sentence)
    {   int max = 0;       
        while (!sentence.equals("*"))
        {   if (sentence.length() > max)

           System.out.println("    Matching words = " +  vowels(sentence));
                sentence = readSentence();
            
        }

        return max; }
    private boolean matches(String word)
    {  for (int i =0; i < word.length();i++)
        if (word.charAt(i)== 'z')
        {String rst = word.substring (i+1,word.length());
        return vowels(rst)==2;}
        return false;
    
    }

    private int vowels(String sentence)
    {   int count = 0;            
        StringTokenizer toker = new StringTokenizer(sentence);
        while (toker.hasMoreTokens())
          {
           String token = toker.nextToken();
           if (token.contains("z"))
           { int num = token.indexOf('z');
            token = token.substring(token.length()- num);
           for (int i = 0; i < token.length(); i++)
            if(isVowel(token.charAt(i)) )
                count++;
            
            }
            return count;   }

    private boolean isVowel(char c)
    {   switch(c){
                case 'a':
                case 'e':
                case 'i':
                case 'o':
                case 'u':   
                return "aeiou".contains(String.valueOf(c));}
                return false;
            }
}