 import java.util.ArrayList;
public class SuperHeroDriver
{
    public static void main(String args[])
    {
        FriedEggMan hero1 = new FriedEggMan("yellow", true);
        AsteroidMan hero2 = new AsteroidMan("red", false);
        Aquaman hero3 = new Aquaman("blue", true);
        ArrayList<SuperHero> hero = new ArrayList<SuperHero>();
        hero.add(hero1);
        hero.add(hero2);
        hero.add(hero3);
        for(SuperHero x: heroes)
        {
            System.out.println(x);
        }
        SuperHero [][] capedHeroes = new SuperHero[3][3];
        int heroCount = 0;
        int index;
        for(index = 0; index<hero.size(); )
        {
            if(hero.get(index).isCaped())
            {
                capedHeroes[heroCount/(capedHeroes.length)][heroCount%(capedHeroes[0[.length)] = hero.get(index);
                heroCount++;
                hero.remove(index);
            }
            else
            {
                index++;
            }
        }
    }
}