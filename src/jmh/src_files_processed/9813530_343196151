public class CaixaFastFood{
    public int codigo;
    private int quantidade;
    
    public void setQuantidade(int quantidade){
        this.quantidade=quantidade;
    }
    public int getQuantidade(){
        return quantidade;
    }
    public double calcularValorAPagar(){
        if (this.codigo==1){
            return this.quantidade*2.30;
        }else
            (this.codigo==2){
                return this.quantidade*1.50;
            }else if
                (this.codigo==3){
                    return this.quantidade*1.30;
                }else if(this.codigo==4){
                    return this.quantidade*0.70;
                }else{
                        
                }
        }
        
       
    

    public String toString(){
        return "Valor total a pagar: R$ "+calcularValorAPagar();
    }
}