import javax.swing.*;
import java.awt.event.*;
import java.awt.*;

public class respondevents extends JFrame
{
    public respondevents(){
        global int  i;
        JButton jbOk=new JButton("OK");
        JButton jbCancel=new JButton("CANCEL");
        JTextField textField=new JTextField();
        JPanel panel = new JPanel(new FlowLayout(FlowLayout.LEFT,2,3));
        panel.add(jbOk);
        panel.add(jbCancel);
        panel.add(textField);
        add(panel);
        OkClassListener listener1=new OkClassListener(); 
        CancelClassListener listener2=new CancelClassListener();
        UpdateTextField listener3= new UpdateTextField();
        jbOk.addActionListener(listener1);
        jbCancel.addActionListener(listener2);
        textField.addActionListener(listener3);

    }

    public static void main(String []args){
        JFrame frame = new respondevents();
        frame.setSize(200,200);
        frame.setVisible(true);
        frame.setLocationRelativeTo(null);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    }

    
}

class OkClassListener implements ActionListener{
    public void actionPerformed(ActionEvent e){

    }
}

class CancelClassListener implements ActionListener{
    public void actionPerformed(ActionEvent e){
    }
}
class UpdateTextField implements ActionListener{
    @Override
    public void actionPerfomed(ActionEvent e){
    
    }

}