import javax.swing.*;
import java.awt.*;

public class CheckerBoard
{
    public static void main () {
        JFrame theGUI = new JFrame();
        theGUI.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        theGUI.setSize (300, 300);

        int count = 0;
        int redblack = 0;
        int blackred = 0;
        int cols = 8;
        int rows = 8;

        theGUI.setSize(cols * 50, rows * 50);
        theGUI.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Container pane = theGUI.getContentPane();
        pane.setLayout(new GridLayout(8,8));

        

        while (count < 64)
        {
            if (redblack == 0)
            {
                new JPanel();
                ColorPanel Panel = new ColorPanel(Color.red);
                pane.add(Panel);
                redblack = 1;


            }
            else if (redblack == 1)
            {
                JPanel First column = new JPanel();
                ColorPanel Panel = new ColorPanel(Color.black);
                pane.add(Panel);
                redblack = 0;


            }

            if (count % 8 !=0)
            {
                if (blackred ==0)
                {
                    JPanel First column = new JPanel();
                    ColorPanel Panel = new ColorPanel(Color.red);
                    pane.add(Panel);
                    blackred = 1;
                }
                else if (blackred == 1)
                {
                    JPanel First column = new JPanel();
                    ColorPanel Panel = new ColorPanel(Color.black);
                    pane.add(Panel);
                    blackred = 0;

            
                }
            }
        }
        
        theGUI.setVisible(true);
    }
}