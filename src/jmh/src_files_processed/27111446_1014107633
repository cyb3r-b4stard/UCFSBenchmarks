import java.io.*;
public class matrix
{
    public static void main(String args[]) throws IOException
    {
        InputStreamReader read = new  InputStreamReader (System.in);
        BufferedReader in = new  BufferedReader(read);
        int mx1,mx2;  int i,j;int f=0;
        System.out.println(" enter your inputted array");
        int m[][]= new int[10][10];
        for(i=0;i<10;i++);
        {
            for(j=0;j<10;j++)
            {
                System.out.println("enter the elements of the array");
                m[i][j]=Integer.parseInt(in.readLine);
            }
             System.out.println("the original matrix is=+m[i][j]");
            }
             if(m[i][j]>mx1)
             {
                 mx1= m[i][j];
                 {
                    int pos1[][]= m[i][j]
                      System.out.println("the position of the greatest element is=+pos1[][]");
                    }
                }
                if(m[i][j]>mx2)
                {
                    if(mx2!=mx1)
                    {
                        mx2=m[i][j];
                    }
                     System.out.println(" the second largest element is=+mx2");
                   int pos2[][]= m[i][j];
                      System.out.println("the position of the second highest element is=+pos[][]");
                    }
                    for(int t=0;t<10;t++)
                    {
                       for(int s=0;s<10;s++)
                       {
                           if(m[t][s]>m[t][s+1])
                            f= m[t][s];
                           m[t][s+1]= f;
                        }
                    }
                    System.out.println("the sorted array is=");
                    for(int a=0;a<10;a++)
                    
                    for(intb=0;b<10;b++)
                    {
                        System.out.println(m[a][b]+"");
                        System.out.println();
                        
                    }
                }
            }
        
                    
                        
                    
                    
                    
                 
                      
                      
                      
                      
                      
                      
                      