import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class patternFinderExamples
{
  public static void main(String args[])
  {
      Scanner sc = new Scanner(System.in);
      
      System.out.print("Please enter a sentence: ");
      String userInput = sc.nextLine();
      
 System.out.println("The length of your string is: " + userInput.length() + "\n" + 
 "To match the found patterns below, begin counting at 0 (the index)"); 


    Pattern pat1 = Pattern.compile("[^aeiou ]a");
    Matcher mat1 = pat1.matcher(userInput);
    while (mat1.find())
       {
       System.out.println("Match at index (@a): " + mat1.start());
    }
    if (mat1.find() == false) {
       System.out.println("@a: No matches found.");
    }
System.out.println();


    Pattern pat2 = Pattern.compile("[aeiou]a");
    Matcher mat2 = pat2.matcher(userInput);
    while (mat2.find())
       {
         System.out.println("Match at index(#a): " + mat2.start());
       }
    if (mat2.find() == false) {
       System.out.println("#a: No matches found.");
    }
    System.out.println();


    Pattern pat3 = Pattern.compile(" a");
    Matcher mat3 = pat3.matcher(userInput);
    if (mat3.find())
       {
         System.out.println("Match at index(&*a): " + mat3.start());
         else 
         System.out.println("&*a: No matches found.");
       }
    
    System.out.println();


    Pattern pat4 = Pattern.compile("[a-z]a");
    Matcher mat4 = pat4.matcher(userInput);
    
    while (mat4.find())
       {
         System.out.println("Match at index(&a): " + mat4.start());
       }
    if (mat4.find() == false) {
       System.out.println("&a: No matches found.");
    }  
    System.out.println();


  }
}
