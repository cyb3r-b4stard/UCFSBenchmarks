
/**
 * ##### ## ## ###### ############# ### ############### ### ## #### ####.
 */
public class Billetautomat {
    private int pris;    
    private int balance; 
    private int total;   
    private int antalBiletterSolgt; 

    /**
     * Opret en billetautomat der sælger billetter til en given billetpris.
     * @param billetpris skal være større end nul (p.t. bliver det ikke tjekket)
     */
    public Billetautomat(int billetpris) {
        pris = billetpris;
        balance = 0;
        total = 0;
        antalBiletterSolgt = 0;
    }

    /**
     * Opret en billetautomat der sælger billetter til en given billetpris
     * @param billetpris skal være større end nul (p.t. bliver det ikke tjekket)
     * @param startbalance mængden af penge automaten allerede indeholder
     */
    public Billetautomat(int billetpris, int starttotal) {
        int pris = billetpris;
        balance = 0;
        total = starttotal;
        antalBiletterSolgt = 0;
    }

    /**
     * Giver prisen for en billet. 
     */
    public int getBilletpris() {
        int resultat = pris;
        return resultat;
    }

    /**
     * Modtag nogle penge (i kroner) fra en kunde.
     */
    public void indsætPenge(int beløb) {
        balance = balance + beløb;
        
    }

    /**
     * Udskriv en billet.
     * Opdater total og nedskriv balancen med billetprisen
     */
    public void udskrivBillet() 
    
    {     
        int mindsteBeløb;
        if(mindsteBeløb < 0) {
        mindsteBeløb = pris - balance;
        
        {
           
        System.out.println("##########B##T#########");
        System.out.println("# BlueJ Trafikselskab #");
        System.out.println("#                     #");
        System.out.println("#        Billet       #");
        System.out.println("#        " + pris + " kr.       #");
        System.out.println("#                     #");
        System.out.println("##########B##T#########");
        System.out.println("#Du har " + (balance - pris) + " kr til gode#")         ;
        System.out.println("##########B##T#########");
        System.out.println();

        antalBiletterSolgt = antalBiletterSolgt + 1;

        total = total + pris;
        balance = balance-pris;
    }
     if else (pris == 0) {
        System.out.println("Du mangler " + mindsteBeløb + " kr. mere for at købe billetten." );

    }
   }
}
}

