import kareltherobot.Directions;
import kareltherobot.UrRobot;
import kareltherobot.World;
/** ###### ### ### #### ## ###### ######## ######## ####
 * 
 */

public class Contractor extends UrRobot
{
    private Mason perry = new Mason(1, 1, East, 20);
    private Roofer doctor = new Roofer(1, 1, East, 20);
    private Carpenter karen = new Carpenter(1, 1, East, 20);

    public Contractor(int street, int avenue, Direction direction, int beepers)
    {
        super(street,avenue,direction,beepers);
    }

       private void gatherTeam()
    {
    }

    public void buildHouse()
    {	gatherTeam();
        perry.getToWork(8, 5);  
        doctor.getToWork();
        karen.getToWork(2,1,);
    }

    public static void main(String [] args) 
    {	Contractor general = new Contractor(1, 1, East, 0);
        general.buildHouse();
        general.turnOff();
    }
    static
   	{
		World.readWorld("test.kwld");
	    World.setVisible(true);
	    World.setDelay(20);
	}
}