public class hailstone {

   public static void main( String[]args ) {
       int integer,count, variable;
       integer=Console.readInt("Enter a number:");
       while(integer !=1)
       {
        
          if(integer%2=0)
           {
              integer = integer/2;
              System.out.println(integer+" is even, so I take half "+integer/2);
              count= count+1;
           }
           
          else
           {
               integer= 3*integer + 1;
               System.out.println(integer+" is odd, so I make 3*integer+1: "+integer);
               count=count+1;
           }
           
   
}
System.out.println("The process took "+count+" steps to reach 1");

}
}
