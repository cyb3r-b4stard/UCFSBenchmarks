import java.util.*;
import java.io.*;

public class ThreeLetters 
{
    
    public static void main(String[] args) throws IOException, FileNotFoundException
    {
        File inFile = new File("C:\\Users\\Anjali Ohri\\Desktop\\Comp Programming II\\PlantPack.txt");
                if (!inFile.exists())
                {
                    System.out.println("The file does not exist..");
                }
                if (inFile.exists())
                {
                    Scanner scanner = new Scanner(inFile);
                    String s = scanner.nextLine();
                    String s1 = s.toLowerCase();
                    char a = s.charAt(0);
                    char b = s.charAt(1);
                    char c = s.charAt(2);
                    
                    boolean threeEqual = compareChars(s1);
                    
                    System.out.println(threeEqual);
                    
                }
    }
    public static boolean compareChars(String s)
    {
        if(a == b && b == c)
        return true;
        else if(s.length() == 0)
        return false;
        else
        return compareChars(s.substring(1, s.length());
         
    }
}
        
                    
                  
        