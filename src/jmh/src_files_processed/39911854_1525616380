

import java.util.Arrays;

public class SwapHalves
{
    public static void main(String[] args)
    {
        int num = 12
        
        System.out.println(sumOfDigits(num));
    }
    
   public static double sumOfDigits(int n)
   {
       double sum = 0;
       for (int i = numLength(n); i > 0; i--)
       {
           int digit = n % 10;
           for (int j = numLength(n); j > 0; j--)
           {
               System.out.printf("%2d, %2d", digit, j);
           }
           sum += digit;
        }
       return sum; 
    }
    
    public static int numLength(int n)
    {
        int length = (int)(Math.log10(n) + 1);
        return length;
    }
}