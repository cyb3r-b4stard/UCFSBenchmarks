import java.util.Scanner;

public class RightTriangle
{
    public static void main(String args[])
    static Scanner console = new Scanner (System.in);
    {
        float first, second, third, sides, first2, second2, third2;
        
        
        System.out.println("Enter the 3 sides of the triangle");
        
        System.out.println("Enter the first side: ");
        first=console.nextInt();
        System.out.println("Enter the secomd side: ");
        second=console.nextInt();
        System.out.println("Enter the third side: ");
        third=console.nextInt();
        
        first2=first*first;
        second2=second*second;
        third2=third*third;
        
        if(third2=first2+second2)
        {
            System.out.println("It is a right triangle!");
        }
        else
        {
            System.out.println("It is not right triangle");
        }
    }
}
        