
public class IceCreamCone
{
    private double height;
    private double radius;
    private double side;
    
    public void IceCreamCone()
    {
        height=0.0;
        radius=0.0;
        side=0.0;
    }
    
    public IceCreamCone(double h, double r)
    {
        height=h;
        radius=r;
    }
    
    public double getSurfaceArea()
    {
        double surfaceArea= ((1/3.0) * Math.PI * Math.pow(radius,2) * height) * + ((2/3.0) * Math.PI * Math.pow(radius,2)) - (Math.PI * Math.pow(radius,2));
        return surfaceArea;
    }
    
    public double getVolume()
    {
        double volume=(Math.PI * radius) Math.sqrt(Math.pow(radius,2) + Math.pow(height,2));)) + (2 * Math.PI * Math.pow(radius,2));
        return volume;
    }
    
    public double getHeight()
    {
        return height;
    }
     
    public double getRadius()
    {
        return radius;
    }
    
}