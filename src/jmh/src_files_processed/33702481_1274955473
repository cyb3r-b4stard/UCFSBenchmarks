import java.util.*;
class program_2
{
    void split()
    {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the sentence");
        String s = sc.nextLine();
        String[] arr = s.split(" "); 
        String d = "" ;
        for(int i = 0;i <= arr.length -1; i++)
        {
          d = reverse(arr[i]);
        }
    System.out.print(d);
    }
        String reverse(String w)
        {
        String rev = "", d = "",g = "";
        for(int a = w.length()- 1; a >=0 ; a --)
        {
            char b = w.charAt(a);
            rev = rev + b;
            if ( w == rev)
            g = g + w ;
             return g;
             else 
             return d;
        }     
        
    }  
    void main()
   {
     split();
    }
    }
            
            
            
            
            
      
        
             

        

        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
    