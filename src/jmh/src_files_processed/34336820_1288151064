
import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

public class Territorium extends JApplet implements ActionListener
{
   Roboter robbi1, robbi2, robbi3, robbi4;
   Button btnVor, btnLinks;
   

   public void init()
   {
      robbi1 = new Roboter(150,150);  
      
       btnVor = new Button("Vor");
         btnVor.setBounds(150,400,100,50);      
        setLayout(null);
        add(btnVor);
        
       btnLinks = new Button("links um");
       btnLinks.setBounds(250,400,100,50);
       setLayout(null);
       add(btnLinks)
       
       btnVor.addActionListener(this);
    }

   public void paint(Graphics g)
   {
      robbi1.zeigen(g,2); 
   
   }
   
   
  }