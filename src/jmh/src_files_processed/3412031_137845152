
/**
 * ##### ###### ### ## ## #### ####### ## #######.
 * 
 * ###### #.
 * ##.##.####
 */
public class Heizung
{
    double temperatur;
    boolean gemein;
    int gerundet;
    /**
     * Standardtemperatur
     */
    public Heizung()
    {
        temperatur = 15.5;
    }

    /**
     * Temperatur erhöen
     */
    public void waermer ()
    {   
        if (gemein == false)
        { 
            temperatur = temperatur + 0.5;
        }
        else
        {
            temperatur = temperatur - 0.5;
        }
    }

    /**
     * Sich entschuldigen, damit die Heizung wieder funktioniert
     */
    public void entschuldigen ()
    {
        gemein = false;
    }

    /**
     * setzt gemein auf true. Heizung ärgern, dadurch macht die Heizung das Gegenteil.
     */
    public void aergern ()
    {
        gemein = true;
    }

    /**
     * Temperatur senken
     */
    public void kaelter ()
    {   
        if (gemein == false)
        { 

            temperatur = temperatur - 0.5;
        }
        else
        {
            temperatur = temperatur + 0.5;
        }
    }

    /**
     * Temperatur stark erhöen
     */
    public void schnellWaermer ()
    {   
        if (gemein == false)
        { 

            temperatur = temperatur + 5;
        }
        else
        {
            temperatur = temperatur - 5;
        }
    }

    /**
     * Temperatur stark senken
     */
    public void schnellKaelter ()
    { 
        if (gemein == false)
        { 

            temperatur = temperatur - 5;
        }
        else
        {
            temperatur = temperatur + 5;
        }
    }

    /**
     *TemperaturAnzeige
     */
    public void TemperaturAnzeig()

    {
        for( int forschleife = 0;forschleife != gerundet; forschleife ++)
        {
            system.out.print("0")
        }
        
           system.out.println(0|||5|||10|||15|||20|||25|||30|||35|||40|||45

    }
    /**
     * sag ihm deine Meinung!
     */
    public void duBistGemein()
    {
        if (gemein == true)
        {
            System.out.println("Ja, und ich liebe es!");
        }
        else 
        {
            System.out.println("Ich bin doch lieb!");
        }

    }

    /**
     * Gibt die Temperatur
     */

    public void zeigTemperatur()
    {
        if (gemein == true)
        { 
            System.out.println("Nö!");

        }
        else
        {
            gerundet= (int) temperatur;
            System.out.println("Die Temperatur beträgt " +gerundet+ "°");

        } 
    }       
}
