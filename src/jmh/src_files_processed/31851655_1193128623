
import java.lang.*;
import java.lang.Math;
import java.util.*;

public class CoinFlip
{
  public static void main(String[] args) {
      
      int totalgames = 0;
      int totalright = 0;
      int Exitvalue;
      int computerthrow;
      int userguessint = 0;
      boolean validentry = false;
      boolean result
      Scanner scn = new Scanner(System.in);
      String userguess = "";
 
      do {
          
           do {
               System.out.print("Guess Heads or Tails: ");
            userguess = scn.nextLine();
         
            if (userguess.equalsIgnoreCase("Heads")) {
                userguessint = 0;
                validentry = true;
            }else if ((userguess.equalsIgnoreCase("Tails"))){
              userguessint = 1;
              validentry = true;
            }
            
        }while(validentry = true);
        
        validentry = false
        computerthrow = (int)(1 * Math.random());
      
          if (computerthrow == userguessint)
            
          
          
          
          
          System.out.print("Enter -1 to quite or 1 to continue: ");
          Exitvalue = scn.nextInt();
          
    } while(Exitvalue != -1);
    }
}