
import javax.swing.*;
class Main
public static void main(String[] args)
{
        System.out.println("+-------------------------------+");
        System.out.println("| Welcome to the Adventure Game |");
        System.out.println("+-------------------------------+");
        String characterName=JOptionPane.showInputDialog("PLease enter your name below:");
        String characterType=JOptionPane.showInputDialog("Do you want to be a Magician,a Warrior or a Monster?");
        Character character; 
        if(characterType.equals("Monster")) 
        {
            character=new Monster(characterName,true);
        }
        else if(characterType.equals("Warrior"))
        {
            character=new Warrior(characterName);
        }
        else if(characterType.equals("Magician"))
        {
            character=new Magician(characterName);
        }
        else
        {
            JOptionPane.showMessageDialog(null,"Wrong Choice!");
            characterType=JOptionPane.showInputDialog("Do you want to be a Magician,a Warrior or a Monster?");
            return;
        }
        System.out.println(character.greet());
        askReaction(characterType,character);
    }
    public static void askReaction(String characterType,Character character)
    {
        if(characterType.equals("Monster"))
        {
            System.out.println("Feed me,otherwise I will eat you!!!");
            Monster monster=(Monster)character;
            monster.setSpeed(Integer.parseInt(JOptionPane.showInputDialog("Enter a number for feeding the Monster to keep yourself alive:")));
        }
    }
}