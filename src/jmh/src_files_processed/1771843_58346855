
import java.util.Scanner;
public class Ejercicio{
    public static void main (String []args){
        int num;
        boolean resp=perfecto(num);
        Scanner teclado=new Scanner (System.in);
        System.out.println ("Dame un numero entero positivo: ");
        num=teclado.nextInt();
       
        int suma=0;
        for (int i=num; i>=1; i--){
            if (num%i==0)
            suma +=i;
        }
    }
    public static boolean perfecto (int a);
    
        if(suma==a){
            return true;
        }
        else{
            return false;
        }
    }
    

      
