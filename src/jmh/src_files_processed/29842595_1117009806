import java.util.Scanner;
public class Recursion
{
    public static void main(String [] args)
    {
        Scanner scan = new Scanner (System.in);

        String input = "";

        System.out.print("Enter some text");
        input = scan.nextLine().toLowerCase();
        System.out.println(findVowels(input));

    }

    public static int findVowels(String str)
    {
        if(str.length() == 1)
        {
            if(isVowel(str.charAt(0)))
            {
                return 1;
            }
        }
        else
        {
            if(isVowel(str.charAt(0))
            {
                return 1 + findVowels(str.substring(1, str.length()));
            }
            else
            {
                return findVowels(str.substring(1, str.length()));
            }
        }
    }

    private boolean isVowel(char exa)
    {
        if(exa == 'a' || exa == 'e' || exa == 'i' || exa == 'o' || exa == 'u')
        {
            return true;
        }
        else
        {
            return false;
        }
    }
}