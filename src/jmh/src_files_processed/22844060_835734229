
public class GG
{
    public int nachfolger(int i)
    {
        return i++;
    }
 
    public int summe (int a, int b)
    {
        int ergebnis;
        if(b==0)
        {
            ergebnis = a;
        }
        else
        {
            ergebins = summe(nachfolger(a));b= b-1);
        }
        return ergebnis;
    }
}