import java.util.Scanner ;

public class TravelAgency

   {

public static void main (String[]args)
{ 
    
    
    Scanner scan = new Scanner(System.in);
    
       System.out.println ("Hello. Please enter your destination in two integers:" + '\n');
    
    int xPoint = scan.nextInt();
    int yPoint = scan.nextInt();
    
    
    int distanceInSq = (xPoint*xPoint)+(yPoint*yPoint);
    double distance = Math.sqrt(distanceInSq);
    
    
    final int PRICE_FOR_HUNDRED_KM = 50;
    double extraDistnceCheck = distance/100;
    int ticketPrice = extraDistnceCheck * PRICE_FOR_HUNDRED_KM;
    double extraDistnceCheckTwo = extraDistnceCheck % 2;
    
    if (extraDistnceCheckTwo = 0); 
    
    
        System.out.println ("The price of the flight is:" + '\n' + ticketPrice);
    
    else 
    
        System.out.println ("The price of the flight is:" + '\n' + ticketPrice + PRICE_FOR_HUNDRED_KM);
    
        
   
    System.out.println ("Please enter your credit card number:" + '\n');
    
    int creditCardNum = scan.nextInt();
    
      if ((creditCardNum < 1000000)&&(creditCardNum > 100000)&&(creditCardNum/100000>=1))
              {  int sixNum = creditCardNum % 10;
                int fiveNum = (int) creditCardNum/10;
                int modoloSeven = fiveNum % 7; 
                if (modoloSeven - 1 = sixNum) 
                
                System.out.println ("Your credit card is valid. Bon Voyage! ");
              }   
      else 
             
                System.out.println ("Your credit card is not valid. You cannot buy the ticket.");
                
                
            } 
            
        } 
            
     
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
    