import java.util.ArrayList;
/**
 * #### ####    
 * ##/##/####
 */

public class CarRental
{
    private ArrayList<Rental> Rentals;
    private int rentalNumber = 1;
    private double kmAvg;
    public double totalRevenue;

    /**
     * Constructor for objects of class CarRental
     */
    public CarRental()
    {
        rentals = new ArrayList<>();
        rentalNumber = 1;
    }   
    
    public void addRental(int carNumber, int startDay, int startMonth, int startYear, int endDay, int endMonth, int endYear, int kmFree, int kmTotal)
    {
        rentals.add(new Rental(rentalNumber, carNumber, startDay, startMonth, startYear, endDay, endMonth, endYear, kmFree, kmTotal));
        rentalNumber++
    }

    public double getAvgDistance()
    {
        int amount = 0;
        int totalDistance = 0;
        for(Rental rental : rentalList)
        {
            totalDistance += rental.getDistance();
            amount++;
        }
        this.kmAvg = totalDistance / amount;
        
        return this.kmAvg;
    }
    
    public String getLongestRental()
    {
    }
    
    public void addRevenue(double money)
    {
        this.totalRevenue = this.totalRevenue + money;
        return this.totalRevenue;
    }
}