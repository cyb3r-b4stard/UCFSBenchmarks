public class BowlScores
{
    private String name;
    private int numGames;
    private int[]gameScores = new int [4];
    private int a;
    private int b;
    private int sum;
    private double ave;
    private int c;
    public BowlScores(String nm, int nGames)
    {
    name = nm;
    numGames = nGames;
    
    }
    public String getName()
    {
        return name;
    }
    public int getNumGames()
    { return numGames;
    }
    public int[] getBowlScores()
    { return gameScores;
    }
    public int getScore(int n)
    {
        return gameScores[n];
    }
    public int getTotal()
    { 
      b = gameScores.length;
      for (a=0;a<=b-1;a++)
      { sum = sum + gameScores[a];
        }
       return sum;
    }
    public double  getAverage()
    { b = gameScores.length;
       for (a=0;a<=b-1;a++)
       { sum = sum + gameScores[a];
        }
        ave = sum/(1.0*numGames;
        return ave;
    }
    public void setName(String nm)
    {name=nm;
    }
    public void setGameScore(int gameNum, int newScore)
    {
      c = gameNum;
      gameScores[c] = newScore;
    }
    public String toString()
    {
        String result = "";
        result += "Bowler: " + name + "\n";
        for (int i = 0; i < gameScores.length; i++)
        {
            result += "Game " + i + ": " + gameScores[i] + "\n";
        }
        result += "Total: " + getTotal() + "\n";
        result += "Average: " + getAverage() + "\n";
        return result;
    }
}