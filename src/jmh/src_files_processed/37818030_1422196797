import java.util.Scanner;

public class InchWormDemo
{
  public static void main(String[] args)
  {
      int x=1;
      InchWorm worm = new InchWorm();
      System.out.println("The initial deriction is right.Enter 0 for move.Enter 1 for turn.") ;
      while(x==1)
      {
      Scanner in=new Scanner(System.in);
      String get=in.next();
      System.out.println(get);
      if(get.equals("0"))
      {
          worm.move();
          System.out.println(worm.getPosition());
        }
        else if(get.equals("1"))
            worm.move();
            else
            System.out.println("Enter wrong!");
       System.out.println("Enter 2 for continue.");
       Scanner in1=new Scanner(System.in);
       String get1=in.next();
       if(get1.equals("2"))
       else
       break;
        }
      
    }
}