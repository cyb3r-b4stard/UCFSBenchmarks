/**
 *
 */
public class Buch extends Medium 
{
    private String autor;
    private List l; 
    public Buch(boolean pstatus, int psignatur, String ptitel, String pautor){
        setzeStatus(pstatus);
        setzeSignatur(psignatur);
        setzeTitel(ptitel);
        setzeAutor(pautor);
        l = new List();
        l.append(pautor);
    }

    public void setzeAutor(String pAutor){
        autor = pAutor;
    }

    public String gibAutor(){
        return autor;
    }
    
    public void fuegeHinzu(String vorname, nachname){
        Autor au = new Autor(vorname, nachname);
        
        l.append(autor);
    }
    public void gebeAutorAus(){
        l.toFirst();
        while(l.hasAccess()){
            System.out.println(l.getObject());
            l.next();  
        }
    }
}