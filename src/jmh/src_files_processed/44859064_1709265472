public class PokerStats
{
    final int MAX_TESTS = 1000000;
    final int HAND_SIZE = 5;
    int [] results = new int [10];
    /**
     * Constructor for objects of class PokerStats
     */
    public PokerStats()
    {
       
       
    }

    public void test ()
    {
        Deck deck = new Deck();
        for(int i=0; i<MAX_TESTS; i++)
        {
            deck.shuffle();
            Hand hand = new Hand( deck, HAND_SIZE);
            int r = hand.evaluate();
            results[r]++;
            hand.putCardsBack();
        }
