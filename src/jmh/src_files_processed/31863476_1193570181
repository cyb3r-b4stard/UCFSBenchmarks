
public class ifStatements
{
    private int a;
    private int b;
    
    public ifStatements()
    {
        a = 10;
        b = 20;
    }

    public int addition(String answer)
    {
        return a + b;
        
        if{
            a + b == 30;
            System.out.println("the answer is correct");
           }
        else{
            System.out.println("the answer is wrong")
        }
    }
}