        SIM s2 = new SIM("066412",500,false);
        p1.anmelden(s2);
        
        Person p2 = new Person();
        personen.add(p2);
        SIM s3 = new SIM("00000",100,true);
        p2.anmelden(s3);
        SIM s4 = new SIM("0664123",500,false);
        p2.anmelden(s4);
        
        Person p3 = new Person();
        personen.add(p3);
        SIM s5 = new SIM("066411234",500,true);
        p3.anmelden(s5);
    }
    
    public void setVorwahl(String vorwahl)
    {
        this.vorwahl = vorwahl;
    }
    
    public void setPreisMin(double preisMin)
    {
        this.preisMin = preisMin;
    }
    
    public String getVorwahl()
    {
        return vorwahl;
    }
    
    public double getPreisMin()
    {
        return preisMin;
    }
    
