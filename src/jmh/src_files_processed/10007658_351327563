import javax.swing.JOptionPane; 
public class CheckSplitter
{
    public static void main () 
    {
       String intStr = JOptionPane.showInputDialog ("Enter the cost of the bill.") ; 
       String dubStr2 = JOptionPane.showInputDialog ("Enter a tip percentage") ; 
       String intStr3 = JOptionPane.showInputDialog ("Enter the amount of people splitting the bill.");
       int intB = Integer.parseInt(intStr);
       double dubT = Double.parseDouble(dubStr2
       int intP = Integer.parseIntger(intStr3);
       double dubC = (intB*(1+dubT))/intP ;
       System.out.println ("If the bill is $"+dubB+", with an "+dubT+"% tip split amongst "+dubP+" people the output would be for each person is $"+dubC+"."); 
    }
}