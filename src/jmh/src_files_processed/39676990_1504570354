public class Cinka {
    private int poziciaX;
    private int poziciaY;
    private boolean jeZobrazeny;
    private Elipsa gulaL;
    private Elipsa gulaP;
    private Obdlznik zrdka;
    /**
     * Constructor for objects of class Cinka
     */
    public Cinka(int paPoziciaX, int paPoziciaY) {
        this.poziciaX = paPoziciaX;
        this.poziciaY = paPoziciaY;
        this.zrdka = new Obdlznik(poziciaX + 25, poziciaY + 23, 150, 4, 4);
        this.gulaL = new Elipsa(poziciaX + 0, poziciaY + 0, 50, 50, 1);
        this.gulaP = new Elipsa(poziciaX + 150, poziciaY + 0, 50, 50, 1);
        this.jeZobrazeny = false;
    }
