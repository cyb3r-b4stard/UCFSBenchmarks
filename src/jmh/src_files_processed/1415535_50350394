import java.io.*;
import java.util.*;

public class LuckyDipMachine
{
    private String prizeName;  
    private int prizeWorth;
    private ArrayList<Prize> availablePrizeList; 
    LuckyDip tryLuckyDip;

    /**
     * Constructor for objects of class LuckyDipMachine
     */
    public LuckyDipMachine()
    {
        prizeName = "";
        prizeWorth = 0;
        availablePrizeList = new ArrayList<>(); 
        tryLuckyDip = new LuckyDip();
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void loadPrizes()
    {
        String file = ("prizes.txt");
        String [] splitter = new String [2];
        try
        {
            FileReader loader = new FileReader(file);
            try
            {
                Scanner reader = new Scanner(loader);
                while (reader.hasNextLine())
                {
                    String prize = reader.nextLine();
                    splitter = prize.split(",",2);
                    String prizeName = splitter[0];
                    int prizeWorth = Integer.parseInt(splitter[1]);
                    availablePrizeList.add(String,prizeName);
                    availablePrizeList.add(int,prizeWorth);
                    System.out.println(prizeName + prizeWorth);
                }
            }
            finally
            {
                loader.close();
            }
        }
        catch(FileNotFoundException exception)
        {
            System.out.println(file +" not found");
        }
        catch(IOException exception)
        {
            System.out.println("Unexpected I/O exception occurs");
        }
    }
    
    /**
     * A method to set a name for a prize
     */
    public void setPrizeName(String enterPrizeName)
    {
        prizeName = enterPrizeName;
    }
    
    /**
     * A method to set a worth for a prize
     */
    public void setPrizeWorth(int enterPrizeWorth)
    {
        prizeWorth = enterPrizeWorth;
    }
    
}