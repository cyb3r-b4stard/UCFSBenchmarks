import java.util.Scanner;

public class Conductor{

    private String nombre;
    private String apellidos;
    private String dni;
    private int edad;
    private int sueldo;

    public Conductor(){

        for (int i=0; i < 10; i++){
            System.out.println();}

        do {
            System.out.print("Nuevo conductor.\nNombre: ");              
            Scanner valorNombre = new Scanner(System.in);
            String valorN;
            valorN = valorNombre.nextLine();
            System.out.print(valorN); 
            
            if (valorNombre.length()==0){
                System.out.print("No has puesto nada!");
                Conductor.mensajeError();
                boolean llave = false;
            }else{
                    boolean llave = true;}
                }while(llave = true);}
            nombre = valorNombre.nextLine();
            

            System.out.print("\nApellidos: ");              
            Scanner valorApellidos = new Scanner(System.in);
            apellidos = valorApellidos.nextLine();

            dni = "05408762J";
            edad = 46;
            sueldo = 40000;
        }

        public String getNombre(){return nombre;}
        public String getApellidos(){return apellidos;}
        public String getDni(){return dni;}
        public int getEdad(){return edad;}
        public int getSueldo(){return sueldo;}

        public void mensajeError(){
            System.out.print("\nEl valor introducido no es vÃ¡lido"); }
    }
