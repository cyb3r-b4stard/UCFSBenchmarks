public class Waage
{
double gewicht, groesse, ideal;

  public Waage ()
  { 
      gewicht = 60.0;
      groesse = 1.70;
      ideal = 72.0;
    }
  public void wiegen (double wert)
  {
      gewicht = wert;
    }
  public void messen (double messen)
  {
      groesse = messen;
    }
  public void idealGewichtBerechnen ()
  {
    }
  public void anzeigen ()
  {
      System.out.println();
     
      System.out.println ("Gewicht :" + gewicht + "kg.");
      
      System.out.println ("Körpergröße : " + groesse + " m.");
    }
    
  public double gibgewicht()
  { 
      return gewicht;
  }
  
  public double gibgroesse()
  { 
      return groesse;
   }
  public void setzegroesse(double eingabe)
  {
        if (eingabe< 1.5 || eingabe >2.0)
  
      System.out.println("Falsche Maße");
  }
  else
  {
      groesse = eingabe;
  }
   
  public void setzegewicht (double eingabe)
  {
      if (eingabe< 40 || eingabe >100)
   System.out.println("Falsches Gewicht");
}
 else
 {
     gewicht= eingabe;
    }
    
}