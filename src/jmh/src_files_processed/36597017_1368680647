import java.util.Scanner;
public class Menu
{
    public static void main(String[] args)
    {
   Scanner input = new Scanner (System.in);
    System.out.println("a. Apple");
    System.out.println("b. Banana");
    System.out.println("c. Couple of bananas");
    System.out.println("d. Dang look at all those bananas");
    System.out.print("Pick an option: ");
    
    String choice = input.nextline();
    
    if(choice.equals("a"))
{
    System.out.println("a is for Apple!".
        
}
else if(choice.equals("b"))
{
    System.out.println("How many bananas do you have");
    int numBananas = input.nextInt();
    
   System.out.println("You have " + numBananas + "bananas!");
}

}


{
        
  
}
}
    