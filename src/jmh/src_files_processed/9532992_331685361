    public static void  main (String[]args) {
        Scanner scan = new Scanner(System.in);
        int secounds,minutes,hours,days;
        final int SEC_IN_MAIN = 60, SEC_IN_HOUR = 3600,
        SEC_IN_MAIN = 86400;
        
