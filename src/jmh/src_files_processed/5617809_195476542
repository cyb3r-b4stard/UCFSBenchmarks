class Calculator
{
private long count = 0;
public void evaluate( char action, long number ){
if ( action == '+' ){
count = count + number;
}
else if ( action == '-' ){
count = count - number;
}
else if ( action == '/' ){
count = count / number;
}
else if ( action == '*' ){
count = count * number;
}

public long = getValue(){
return count;

 
public void setValue( long number ){
count = number;
}
 
public void reset(){
count = 0;
}
}
}
}