
/**
 * ####### ####
 * 
 * ###### #######

 */
public class Car
{

public Car(String color,int year ,String manufacturer,String type,int odometer, int milesPerGallon)
{
    carColor = color;
    yearMade = year;
    madeBy = manufacturer;
    model = type;
    miles = odometer;
    mpg = milesPerGallon;
}
public String getColor()
{
    return carColor;
}

public int getYear()
{
    return yearMade;
}

public String getManufacturer()
{
    return madeBy;
}

public String getType()
{
    return model;
}

public int getMiles()
{
    return miles;
}

public int getMPG()
{
    return mpg;
}


public void setColor(String newColor)
{
    carColor = newColor;
}

public void setYear(int newYear)
{
    yearMade = newYear
}

public void setManufacturer(String newManufacturer)
{
    madeBy = newManufacturer
}

public void setModel(String newModel)
{
    model = newModel
}

public void setMiles(String newMiles)
{
    miles = newMiles
}

public void setMGP(String newMPG)
{
    mpg = newMPG
}
}
   