 */
public class Auto
{
    private String farbe;
    private boolean motor;
    private boolean zuendkerze;
    private boolean fahren;
    private int autonummer;
        
    /**
     * Erzeuge des Autos und wähle die Farbe dieses Autos in 'neueFarbe'. Gültige Angaben sind
     * "rot", "gelb", "blau", "gruen", "schwarz" und "weiss".
     */
    public Auto(String autoFarbe)
    {
        farbe = autoFarbe;
    }

    /**
     * Liefere die Farbe des Autos
     */
    public String getFarbe(){
            return farbe;
    }
    /**
     * Ändere die Farbe dieses Autos in 'neueFarbe'. Gültige Angaben sind
     * "rot", "gelb", "blau", "gruen", "schwarz" und "weiss".
     */
    public void setFarbe (String neueFarbe){
            farbe = neueFarbe;
    }
    /**
     * Motor hinzufügen
     */ 
    public void hinMotor(boolean zuendkerze) {
        motor = true;
        if (zuendkerze = true){
            motor = true;
        }
        else {
            motor = false;
            }
        
    }
    /**
     * Motor entfernen
     */
    public void entMotor() {
        motor = false;
    }
    /**
     * Setze die Nummer des Autos
     */
    public void setAutonummer (int neueAutonummer){
        neueAutonummer = autonummer;
    }
    public int getAutonummer (){
        return autonummer;
    }
    /**
     * Zuendkerze hinzufügen / entfernen
     */ 
    public void hinZuendkerze() {
        zuendkerze = true;
    }
    public void entZuendkerze() {
        zuendkerze = false;
    }
    public boolean kannFahren (String motor){
        
        
        if ((motor = true) && (zuendkerze = true) && (autonummer > 0)){
            System.out.println("#######################################################")
            System.out.println("#das Auto kann fahren. We wish you a pleasant journey!#")
            System.out.println("#######################################################")
   }