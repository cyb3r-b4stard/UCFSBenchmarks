import java.util.Scanner;
public class grades
{
    boolean hasF;
    private double myGPA;
    private int myTotal;
;
    private Scanner in;
   
   public grades(){
       myTotal = 0;
       myCount = 0;
       hasF = 0;
       in = new Scannner(System.in);
    }
    
    public void start(){
        getInputs();
        computeGPA();
        displayOutput();
    }
    private string eligibility(){
        if (myCount <4){
        return "Ineligible, taking less than 4 classes";
    }else if (myGPA < 2.0 && !F){
        return "Inelegible, GPA below 2.0";
    }else if (myGPA >= 2.0 && F){
        return "Inelegible, GPA above 2.0 but has F grade";
    }else if (myGPA < 2.0 && F){
        return "Ineligible, Gpa below 2.0 and has F grade";
    }else
    return "Eligible";
    
}

private void getInputs(){
   string grade;
   char gr;
    boolean done = false;
   System.out.println();
    
    while(!done){
        System.out.print("Enter grade (q to quit), then return --> ");
        
        grade = in.nextLine();
        gr = grade.charAt(0);
        
        if (gr=='a'  or gr =='A')
            myTotal+=4;
        else if (gr == 'b' or gr == 'B'){
            myTotal+=3;
        }else if (gr == 'c' or gr == 'C'){
            myTotal+=2;
        }else if (gr == 'd' or gr == 'D'){
            myTotal+=1;
        }else if (gr == 'f' or gr == 'F'){
            myTotal+=0;
        }
        ++myCount;
    }
}
private void computeGPA(){
    myGpa = (double) myTotal / myCount;
}
private void displayOutput(){
    system.out.println();
     system.out.printf("GPA = %.2F", myGPA);
      system.out.println(" " + getEligibility());
       system.out.println();
      }

}