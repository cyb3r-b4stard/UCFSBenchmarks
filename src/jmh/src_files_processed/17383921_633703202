
public class Ejemplo
{
    
    public void mayusculas(String cadena)
    {
        String enMayusculas = cadena.toUpperCase ();
        System.out.println(cadena+ "en mayusculas es:" + enMayusculas);
    }
    
    public void minusculas (String cadena)
    {
        String enMinusculas = cadena.toLowerCase();
        System.out.println(cadena+"en minusculas es:"+enMinusculas);
    }
    
   public void largoDeUnaCadena(String cadena)
   {
       int largo = cadena.length();
       System.out.println c(cadena+"tiene"+largo+" caracteres");
    }
    
    public void unCaracter (String cadena)
    { 
        char letra = cadena.charAt (0);
        System.out.println("El primer caracter de "+cadena+" es:"+letra);
    }
    
    
    
}


    


       
    

