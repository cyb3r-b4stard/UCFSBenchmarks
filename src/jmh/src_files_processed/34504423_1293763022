public class test
{
    public static void main(String[] args)
    { 
        int val = 3;
        ArrayList a = {2, 3, 4, 3, 3, 4, 4, 5, 4, 3, 2, 1}
        int i; 

        for (i = 0; i < a.size(); i++) { 
            if (a.get(i) == val) 
            {
                a.remove(i);
            } 
        } 
    }
}