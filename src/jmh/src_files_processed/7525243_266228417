import javax.swing.JOptionPane;
/**
 * @###### ### ####### ### #### #####
 * ##### #######
 * ## ###### # ####### "######" ## # ###### ####
 * ### ### ####### ### ######## #### # ###### ##### ## #### ####
 */
public class Player
{
    private Hand myHand;
    private int score;
    private String name;
    
    /**
     * A no-args constructor for Player
     * Creates a nameless player with no money
     * but with a Hand
     */
    public Player()
    {
        myHand = new Hand();
        score = 0;
        name = JOptionPane.showInputDialog(null, "Man, what's your name?");
    }
    
    /**
     * A paramaterized constructor for the Player
     * Creates a player with a given name, amount of money,
     * and hand
     * 
     * @param   hand    A hand for the player to have
     * @param   n   the name of the Player
     */
    public Player(Hand hand, String n)
    {
        myHand = hand;
        score = 0;
        name = n;
    }
    

    /**
     * A method for returning the Player's
     * score
     * 
     * @return  the score
     */
    public int getScore() 
    {
        return score;
    }
    
    
    /**
     * A method for getting the Player's name 
     * if the Player ever needs to be addressed
     * 
     * @return  the name of the Player
     */
    public String getName()
    {
        return name;
    }
    
    /**
     * A method for adding to the score
     * @param   amount  the amount to be added to the score
     */
    public void addToScore(int amount)
    {
        score+= amount;
    }
    
    /**
     * A method for getting the Player's entire hand
     * Useful for the using the hand in other classes
     * 
     * @return  the Player's hand
     */
    public Hand getHand()
    {
        return myHand;
    }
    
    /**
     * Clears the hand so that there is nothing in it
     * Useful for resetting the hand at the beginning of a round
     */
    public void clearHand()
    {
        myHand = new Hand();    
    }
    
    /**
     * Prompts user for a decision on which card to play. Should only be called on a player
     * representing the live user, not an AI player.
     * 
     */
    public void prompt(Situation s, int order)
    {
        String str = "Your hand is: \n";
        for (Card c : myHand.getHand())
        {
            str += c.toString()+"\n";
        }
        str+= "Which card would you like to play? Enter as the rank as a full word and\n";
        str+="the suit as a letter. Ex) TenS, FiveH, JackC, QueenD...";
        String input = JOptionPane.showInputDialog(null, str);
        String shortSuit = input.substring(input.length()-1, input.length()); 
        String rank = input.substring(0,input.length()-1);
        String suit;
        if (shortSuit.equalsIgnoreCase("H")
            suit = "Hearts";
        else if (shortSuit.equalsIgnoreCase("S")
            suit = "Spades";
        else if (shortSuit.equalsIgnoreCase("D")
            suit = "Diamonds";
        else if (shortSuit.equalsIgnoreCase("C")
            suit = "Clubs";
        Card cardToPlay = myHand. 
    }
}
