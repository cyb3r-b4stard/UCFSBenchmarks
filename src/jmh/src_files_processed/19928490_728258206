
public class Waage
{
    double gewicht, groesse, ideal, BMI;
    
    public Waage()
    {
        gewicht = 70.0;
        groesse = 180.0;
        ideal = 72.0;
        BMI = 21;
    }
    
    public void wiegen(double wert)
    {
        gewicht = wert;
    }
    
    public void anzeigen()
    {
        System.out.println("Gewicht     :" + gewicht + " kg. ");
        System.out.println("Körpergröße :" + groesse + " cm. ");
        System.out.println("Differenz   :" + differenz() + " kg. ");
        
        if (differenz() <= -5)
            System.out.println("Sie habe starkes Untergewicht und müssen " + (differenz() * -1) + "kg zunehmen!");
        else if (differenz() <= -1)
            System.out.println("Sie haben Untergewicht und müssen " + (differenz() * -1) + "kg zunehmen");
        else if (differenz() >= 1)
            System.out.println("Sie haben Übergewicht und müssen " + differenz() + "kg abnehmen!");
        else if (differenz() >= 5)
            System.out.println ("Sie haben starkes Übergewicht und müssen " + differenz() + "kg abnehmen!");
        else
            System.out.println("Sie haben genau das Idealgewicht!");
    }
    
    public void messen(double wert)
    {
        groesse = wert;
    }
    
    public double idealgewicht()
    {
        return (groesse - 100) * 0.9;
    }
    
    public double differenz()
    {
        return (gewicht - ideal);
    }
    
    public double BMI()
    {
        return BMI = (gewicht * gewicht / groesse);
    }
    
    public void gibGewichtsklasse()
    {
        System.out.println("Gewicht     :" + gewicht + " kg. ");
        System.out.println("Körpergröße :" + groesse + " cm. ");
        
        if (BMI() <= 16) 
            System.out.println("Sie haben starkes Untergewicht und einen BMI von " + BMI() + ".");
            System.out.println("Um Normalgewicht zu erreichen müssen sie " + (differenz() * -1) + "kg zunehmen.");
        else if (BMI() <= 16.99) 
            System.out.println ("Sie haben mäßiges Untergewicht und einen BMI von " + BMI() + ". Um Normalgewicht zu erreichen müssen sie " + (differenz() * -1) + "kg zunehmen.");
        else if (BMI() <= 18.49) 
            System.out.println ("Sie haben leichtes Untergewicht und einen BMI von " + BMI() + ". Um Normalgewicht zu erreichen müssen sie " + (differenz() * -1) + "kg zunehmen.");
        else if (BMI() <= 24.99) 
            System.out.println ("Sie haben das Normalgewicht und einen BMI von " + BMI() + ". Herzlichen Glückwunsch!");
        else if (BMI() <= 29.99) 
            System.out.println ("Sie leiden an Präadipositas und haben einen BMI von " + BMI() + ". Um Normalgewicht zu erreichen müssen sie " + differenz() + "kg abnehmen.");
        else if (BMI() <= 34.99) 
            System.out.println ("Sie leiden an Adipositas ersten Grades und haben einen BMI von " + BMI() + ". Um Normalgewicht zu erreichen müssen sie " + differenz () + "kg abnehmen.");
        else if (BMI() <= 39.99) 
            System.out.println ("Sie leiden an Adipositas zweiten Grades und haben einen BMI von " + BMI() + ". Um Normalgewicht zu erreichen müssen sie " + differenz () + "kg abnehmen.");
        else if (BMI() >= 40)
            System.out.println ("Sie leiden an Adipositas dritten Grades und haben einen BMI von " + BMI() + ". Um Normalgewicht zu erreichen müssen sie " + differenz () + "kg abnehmen.");
    }
    
}