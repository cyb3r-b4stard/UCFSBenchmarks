import java.util.*;
public class aliasAF
{
    
    public static void main(String[]args)
    {
        String person1 = "Rachel";
        int person1Age = 6;
        String person2 = "Elly";
        int person2Age = 4;
        String person3 = "Sarah";
        int person3Age = 19;
        System.out.println("/nThe three original people...");
        System.out.println(person1+" "+person1Age+" "person2+" "+person2Age+" "person3+" "+person3Age);
        person1 = person2;
        person2 = person3;
        person3 = person1;
        person1Age = person2Age;
        person2Age = person3Age;
        person3Age = person1Age;
        
        System.out.println("/nThe three people resassigned...");
        System.out.println(person1+" "+person1Age+" "person2+" "+person2Age+" "person3+" "+person3Age);
        
    }
}
