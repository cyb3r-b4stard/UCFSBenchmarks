import sum.kern.*;

public class Billard
{
    Bildschirm hatBildschirm;
    Maus hatMaus;
    Kugel hatKugel1, hatKugel2, 

    /**
     * Konstruktor f√ºr Objekte der Klasse Billard
     */
    public Billard()
    {
        hatBildschirm = new Bildschirm(600, 600);
        hatMaus = new Maus();
        hatKugel1 = new Kugel(100,100,42);
        hatKugel2 = new Kugel(200,50,67);
        this.spiele();
    }

    public void spiele()
    {
        do
        {
            hatKugel1.rolle();
            hatKugel2.rolle();
            
        }
        while (!hatMaus.istGedrueckt());
    }

}