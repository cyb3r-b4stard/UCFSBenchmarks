package pmyoo;

package pmyoo;
import ch.aplu.util.QuitPane;
import ch.aplu.robotsim.*;

public class AlumnoRobotTouch extends AlumnoRobot
{
    private TouchSensor sensorContacto ;
    /**
     * Constructor for objects of class AlumnoRobotTouch
     */
    public AlumnoRobotTouch()
    {
     sensorContacto = new TouchSensor ( SensorPort.S3) ;
    
     getRobot().addPart( sensorContacto );
    }
    
    public TouchSensor getTouchSensor(){
     return sensorContacto;
        
    }
    
    public void controlarChoqueYmaniobra(){
        if(sensorContacto.isPressed()){
          atrasYgiroI(800, 250 , 0.2) ;
        
        }
    
    }
    
    public void act(){
        
        while ( !QuitPane.quit() )
		{
			getGear().forward();
			controlarChoqueYmaniobra();
		}
	}
    
    }