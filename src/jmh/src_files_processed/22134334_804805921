/**
 * ######### # ######## ## # ########### #### 
 * #### # ##### ####
 * 
 */
public class PaintJob
{
    private double height; 
    private double radius;
    private double surfaceArea;

    public static final int SQ_FT_PER_SQ_YARD = 9;
    public static final double COST_PAINT_PER_GAL = 95.50;
    public static final int SQ_FEET_PER_GAL_PAINT = 40;
    public static final int COST_PER_SQ_YARD_LABOR = 100;
    public static final double PI = 3.14159;
   
    /**
     * Creates a PaintJob constructor
     * @param cHeight The height of the cylinder 
     * @param cRadius The radius of the dome
     */
    
    public PaintJob(double cHeight, double cRadius)
    {
        height = cHeight;
        radius = cRadius;
        surfaceArea = (2*PI*radius*height) + (2*PIradius^2)
    }


    /**
     * sets a new height for room in this paint job
     * @param theHeight the new height
     */
    public void setHeight(double theHeight)
    {
        height = theHeight;
    }

    /**
     * sets a new radius for room in this paint job
     * @param theRadius the new radius
     */
    public void setRadius(double theRadius)
    {
        radius = theRadius;
    }
    
    /**
     * Gets the Surface area of the Cylinder and dome combined
     * @return Returns the surface area
     */
    public double getSurfaceArea()
    {
        return ;
    }
    
    /**
     * Gets the paint cost to paint all of it
     * @return Returns the total paint cost
     */
    public double getPaintCost()
    {
        return (this.getSurfaceArea()*COST_PAINT_PER_GAL)/SQ_FEET_PER_GAL_PAINT;
    }
    
    /**
     * Gets the total labor cost to painting
     * @return Returns the total labor cost
     */
    public double getLaborCharge()
    {
        return (this.getSurfaceArea()*3)*COST_PER_SQ_YARD_LABOR;
    }
    
    /**
     * Gets the total price paid by the customer
     * @return Returns the total price paid by the Customer
     */
    public double getCustomerPrice()
    {
        return this.getPaintCost() + this.getLaborCharge();
    }
}