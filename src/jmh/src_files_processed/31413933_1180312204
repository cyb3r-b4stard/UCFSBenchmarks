import ecs100.*;

/** ####### ## ###### ###### ######## ####### ###### ##### ###
 *  ############# #####.  
 */

public class CartoonStrip{

    /** animate creates two cartoon figures on the window.
     *  Then animates them according to a fixed script by calling a series
     *  of methods on the figures.
     */
    public void animate(){
        UI.clearGraphics();
        CartoonFigure girl1 = new CartoonFigure("girl1",100,100);
        CartoonFigure guy3 = new CartoonFigure("guy3",400,100);
        girl1.bake(60);
        guy3.bake(30);
        
        girl1.boilWater(UI.askDouble(" \nHow long should she boil the water for?"));
        guy3.boilWater(UI.askDouble("How long should he boil the water for?"));
               
        girl1.reheatFood(UI.askInt(" \nHow long should she reheat the food for?"),1100);
        guy3.reheatFood(UI.askInt("How long should he reheat the food for?"),1100);
        
        girl1.toast();
        guy3.toast();
        
        girl1.useComputer(UI.askInt(" \nHow long should she use the computer for?"));
        guy3.useComputer(UI.askInt("How long should he use the computer for?"));
        
        girl1.vacuum(UI.askInt(" \nHow long should she vacuum for?"));
        guy3.vacuum(UI.askInt("How long should he vacuum for?"));;
        
        UI.println(" \nType either 'hot', 'warm' or 'cold' for temperature setting (not case sensitive)");
        girl1.washLoad(UI.askString("Is the machine a front or top loader? (not case sensitive)"), UI.askString("What is the temperature setting?"))0;
        guy3.washLoad();
        
        /*girl1.;
        guy3.;*/
        
       
        UI.println("The total cost for the electricity that girl1 used is: " + girl1.getPowerBill());
        UI.println("The total cost for the electricity that guy3 used is: " + guy3.getPowerBill());    
    }

    /** For the completion, the story must be a gamebook story
     *      where the user is asked to make decisions about what the characters will do.
     *   At the end it must print out the users power bill for the story that they chose.
     */
    public void animateCompletion(){
        UI.clearPanes();
        /*# YOUR CODE HERE */
    
    }

    /** ---------- The code below is already written for you ---------- **/
        /** Constructor: set up user interface */
    public CartoonStrip(){
        UI.initialise();
        UI.addButton("Clear", UI::clearGraphics );
        UI.addButton("Animate", this::animate );
        UI.addButton("Animate Completion", this::animateCompletion );
        UI.addButton("Quit", UI::quit );
        UI.setDivider(0);       
    }


}
