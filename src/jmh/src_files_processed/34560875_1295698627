public class Buch
{
    private String autor;
    private String titel;
    private int seiten;
    private String signatur;
    private int ausgeliehen;
    

    /**
     * Konstruktor für Objekte der Klasse Buch
     */
    public Buch(String neuerAutor, String neuerTitel, int neueSeiten)
    {
        autor = neuerAutor;
        titel = neuerTitel;
        seiten = neueSeiten;
        signatur = "";
        ausgeliehen = 0;
    }

    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public void setzeAutor(String neuerAutor)
    {
        autor = neuerAutor;
    }
    
    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public void setzeTitel(String neuerTitel)
    {
        titel = neuerTitel;
    }
    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public void setzeSignatur(String neueSignatur)
    {
        signatur = neueSignatur;
        if( signatur.length()==10);
    }
    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public String gebeAutor()
    {
        return autor;
    }
    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public String gebeTitel()
    {
        return titel;
    }
     /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public String gebeSignatur()
    {
        return signatur;
    }
    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public int gebeAusgeliehen()
    {
        return ausgeliehen;
    }
    /**
     * adsdsad
     * a
     */
    public void schreibTitel()
    {
        System.out.println("###########");
        System.out.println("Buch Titel:" + titel + "");
        System.out.println("###########");
    }
    /**
     * adsdsad
     * a
     */
    public void ausleihen()
    {
        ausgeliehen + 1;
    }
    /**
     * adsdsad
     * a
     */
    public void schreibAutor()
    {
        System.out.println("###########");
        System.out.println("Buch Autor:" + autor + "");
        System.out.println("###########");
    }
    /**
     * adsdsad
     * a
     */
    public void detailAusgabe()
    {
        System.out.println("###########");
        System.out.println("Buch Autor:" + autor + "");
        System.out.println("Buch Titel:" + titel + "");
        System.out.println("Buch Seitenzahl:" + seiten + "");
        System.out.println("Signatur:" + signatur + "");
        System.out.println("Ausleihungen:" + ausgeliehen + "");
        System.out.println("###########");
    }
}