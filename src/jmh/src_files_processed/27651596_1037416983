public class MatrixArrayFun
{
    
    private int[][] mat;
    
    public MatrixArrayFun(int rowNumber, int colNumber)
    {
        mat = new int [rowNumber][colNumber];
        for (int i = 0; i < rowNumber; i ++){
            for (int j = 0; j < colNumber; j ++){
                mat [i][j] = (int) (Math.random()*10);
            }
        }
        
        
   
        
    }
    
    public int[][] getMat()
    {
        return this.mat;
    }
    
    public void replaceAll(int oldVal, int newVal)
    {
      for (int i = 0; i < this.mat.length; i ++){
          for (int j = 0; j < this.mat.length; j ++){
              if (this.mat [i][j] == oldVal){
                  this.mat [i][j] = newVal;
                }
            }
        }
    }
    
    public void swapRows(int rowOne, int rowTwo)
    {
        int [] temp1;
        for (int i = 0; i < this.mat.length; i ++){
            int temp [i] = mat [rowOne] [i];
        }
    }
    
    public String toString()
    { 
        String result = "";
        
        for(int i = 0; i < this.mat.length; i++)
        {
            for(int j = 0; j < this.mat[i].length; j++)
            {
                result += " " + this.mat[i][j];
            }
            result += "\n";        
        }
        return result;
    }
    
}