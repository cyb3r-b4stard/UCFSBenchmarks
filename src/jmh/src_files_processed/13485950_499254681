public class Josephus
{  
    private int numPeople;
    private int numKill;
    private boolean[] list;
   
    public Josephus(int numPeople, numKill)
    {
        numPeople = people;
        numKill = kill;
        list = new boolean[numPeople];
          for( int i = 0; i < numPeople; i++)
            list [i] = true;
            
       }
     
        public void runGame()
        {
            int count = 0;
            int survivors = numPeople
         while( survivors != 1)
         {
          for( int i = 0; i < list.length; i++)
           {
             if(list[1])
                       
             {
               count++;
               if( count == numKill) 
               {
                 list[i]= false; 
                 count = 0; 
                 survivors --; 
               }
              }
            }
        }
    }
    
    public int getWinner()
    {  
        int winner;
        for( int i= 0; i < list.length; i++)
           if (list[1]) 
           winner = i+1;
           return winner; 
        }
    }
           