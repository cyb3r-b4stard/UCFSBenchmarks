public static void main(String[] args) {
    double A;
    double B;
    double C;
    double height;
    
    Scanner input = new Scanner )System.in);
    
    do{
        System.out.println("Enter your height here!: ");
        height = input.nextDouble();
        
        if (height >= 6.0){
            system.out.println("YOU BE DUNKING ON NIGGAS!");
        } 
        else if (height >=5.5){
            System.out.println("NIGGA YOU SHORT!");
        }
        else if (height >=5.0){
            System.out.println{"OOMPA LOOMPA LOOKING ASS NIGGA!");
            }
        }
        while (height !=0);
    }