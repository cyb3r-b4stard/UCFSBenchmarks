import java.util.*;
public class Factura{
    private Inscripto inscripto;
    private boolean expositor;
    
    public Factura(Inscripto p_inscripto, boolean p_expo) {
         this.setInscripto(p_inscripto);
         this.setExpositor(p_expo);
    }
    
    private void setInscripto(Inscripto p_inscripto){this.inscripto= p_inscripto;}
    public Inscripto getInscripto(){return this.inscripto;}
    
    private void setExpositor(boolean p_expo){this.expositor = p_expo;}
    public boolean getExpositor(){return this.expositor;}
    
    public double importe(){
		Calendar fecha= Calendar.getInstance();
        int diaSemana = fecha.get(Calendar.DAY_OF_WEEK);
		int mesSemana = fecha.get(Calendar.MONTH+1);
		int diaSemanaI = this.inscripto.getFechaInscripcion().get(Calendar.DAY_OF_WEEK);
		int mesSemanaI = this.inscripto.getFechaInscripcion().get(Calendar.MONTH+1);
        double total= 0.0;
        if (this.inscripto.getCategoria() == "Autor"&& this.getExpositor()){
            total= 300 -300*10/100 ; 
			if(diaSemanaI == 4 ||( diaSemana == 5) && mesSemanaI == 9){
			 return total - total*20/100;
			}
             else if (this.inscripto.getCategoria() == "Asistente"){
				total= 100;  
            	if(diaSemanaI == 4 || diaSemana == 5 && mesSemanaI == 9){
			 return total - total*20/100;
			           else if {
				total= 300; 
                if(diaSemanaI == 4 || diaSemana == 5 && mesSemanaI == 9){
			 return total - total*20/100;
			  return total  ;}
		  }
}
   }
}           
    public void imprimir(){
        System.out.println("******  -----------------------------------  ******");
        System.out.println("Comprobante de pago");
        this.inscripto.mostrar();
        if(this.getExpositor()){
             System.out.print(" - Expositor");
        }
            
        System.out.println("\n"+"Importe total: "+this.importe());
        System.out.println("******  -----------------------------------  ******");
    }
}