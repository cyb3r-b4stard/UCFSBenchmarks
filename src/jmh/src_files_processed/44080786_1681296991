import java.io.*;
import java.util.*;
public class Caps
{
    public static void main (String args[]) throws IOException
    {
        Scanner userInput = new Scanner(System.in);
        System.out.println(" ");
        String message = userInput.next();
        char[] charList = message.toCharArray();
        int intList = Integer.parseInt(new String(charList));
        for (int i = 0; i < message.length(); i++)
        {
            if (charList[i]<=97 && charList[i]>=122)
            {
                intList = intList-32;
                charList[i](int) = intList;
            }
        }
        System.out.println(message);
    }
}