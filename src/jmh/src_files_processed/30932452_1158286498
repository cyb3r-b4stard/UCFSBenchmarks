import javax.swing.JOptionPane;
public class GradesArrayMethods
{
    public static void main(String[] args) {
        int runAgain = 0;
        do {
        String itemsString = JOptionPane.showInputDialog("How many students are in your class?");
        int studentgrade = Integer.parseInt(itemsString);
        double highest = 0;
        double lowest = 100;
        double[] numbers = new double[studentgrade];
        double sum = 0;
        String display = "";
        for(int i = 0; i < numbers.length; i++) {
            String gradeString = JOptionPane.showInputDialog("What are the student's grade from 0 - 100?"); 
            numbers[i] = Double.parseDouble(gradeString);
            sum += numbers [i];
            display += numbers[i] + ",";
        }
        double average = sum / studentgrade;
        average = (int)(average * 100)/100.0;
        int count = 0;
        for (int i = 0; i < studentgrade; i++) {
            if(numbers[i] > highest) {
                highest = numbers[i];
          } 
          if (numbers[i] < lowest){
              lowest = numbers[i];
    
          }
    
        }
      }
   }
}