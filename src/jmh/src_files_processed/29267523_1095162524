public class CoatViewer
{
    public static void main(String[] args)
    {
        Line topC = new Line(20, 10, 50, 10);
        topC.draw();
        topC.setColor(new Color.RED);
        Line sideC = new Line(20, 10, 20, 50);
        sideC.draw();
        Line botC = new Line(20, 50, 50, 50);
        botC.draw();
        Ellipse Oh = new Ellipse(55, 10, 30, 40);
        Oh.draw();
        Line leftA = new Line(100, 10, 100, 50);
        leftA.draw();
        Line topA = new Line(100, 10, 130, 10);
        topA.draw();
        Line midA = new Line(100, 30, 130, 30);
        midA.draw();
        Line rightA = new Line(130, 10, 130, 50);
        rightA.draw();
        Line topT = new Line(135, 10, 165, 10);
        topT.draw();
        Line midT = new Line(150, 10, 150, 50);
        midT.draw();
        
    }
}