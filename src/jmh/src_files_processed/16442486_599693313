public class Insertdelete
{
    private int[]theNumbers;
    private int theNumber;
    private String[]theWords;
    private String theWord; 
    public Insertdelete(int [] insertDeleteNumbers, int insertDeleteNumber, String [] insertDeleteTheWords, String insertDeleteWord)
    {
        theNumbers=insertDeleteNumbers;
        theNumber=insertDeleteNumber;
        theWords=insertDeleteTheWords;
        theWord=insertDeleteWord;
    }
    public void findDelete()
    {
        int count=0;
        for (int i=0;i<theNumbers.length;i++)
        {
            if (theNumbers[i]==theNumber)
            {
                count++;
                for (int k=i;k<theNumbers.length;k++)
                {
                    int j=k+1;
                    if (k==theNumbers.length-1)
                    {
                        theNumbers[k]=-1;
                    }
                    else
                    {
                        theNumbers[k]=theNumbers[j];
                    }
                }
            }
            System.out.println(theNumbers[i]);
        }
        System.out.print("We found it "+count+" times");
    }
    public void findInsert()
    {
        for (int i=0;i<theWords.length;i++)
        {
          
          int l=0
         
            if (theWord.compareToIgnoreCase(theWords[i])<0&&l==0)
            {  
                l=1
               for (int k=theWords.length-2;k>i;k--)
               {
                 int j=k+1;
                 
                    
                 theWords[j]=theWords[k];
                    
                   
                }
             }
             
               theWords[i-1]=theWord;
           
          
          
         
          System.out.println(theWords[i]);
        }
    }
}