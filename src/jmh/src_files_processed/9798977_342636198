 */
public class LeapYear2
{ 
    public static void main(String[]args)
    {
        System.out.println("Hello this program will tell you if the year you input is a Leapyear or not!!!");

        int year; 
        int chk = 4 ; 
        int chk2 = 100; 
        int greg = 1582; 
        int result;
        int result2;

    
        Scanner scan = new Scanner(System.in);
        String YesNo;
        int n = 1;
        System.out.println("");
        System.out.println("");
        System.out.println("");
        do
        {
        
            
       
        System.out.println("Please input the year you would like to check: ");
        year = scan.nextInt();

        result = year % chk;
        result2 = year % chk2;
        if(result2 == 0 &&  result == 0 && year > greg)
        {
            System.out.println("Your number is a leap year!");
        }
        else if(year <= greg)
        {
            System.out.println("I'm sorry this input is invalid.");
        }
        else
        {
         System.out.println("I'm sorry this input isn't a leap year.");
        }
        
        
        System.out.println("Would you like to continue?(y/n)");
        YesNo=scan.NextLine();
        
    }while(n > 1)
}
 }