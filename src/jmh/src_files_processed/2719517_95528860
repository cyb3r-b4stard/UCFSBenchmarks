
public abstract class Business
{
    private int numEmployees = 0;
    private String name;
    private int maxEmployees;
    private double grossProfit;
    private double netProfit;
    private Employee[] employees;
    
    public Business(String name, int maxEmployees, Business bus)
    {
        this.name = name;
        this.maxEmployees = maxEmployees;
        employees = new Employee[maxEmployees];
    }
    public void addEmployee(Employee dude)
    {
        employees[numEmployees]=dude;
        numEmployees++;  
        
    }
       public double getNetProfit()
   {
       return netProfit;
   } 
    
   public double getGrossProfit()
   {
       return grossProfit;
   }
   public int getNumEmployees()
   {
      return numEmployees; 
   }
   public void payPeriod(Double income)
   {
         grossProfit = income;
         
   }
   public double payEmployees()
   {
       for(int i = 0; i < numEmployees;)
   }
}