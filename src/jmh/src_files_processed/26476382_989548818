
import java.util.Scanner;

public class OddsAndEvens
{
    int[] list;
    boolean isOdd = false;
    private String array(int[] array, boolean odd)
    {
        int[] list = new int[array.length];
        isOdd = odd;
        return "";
    }
    
    private int countEm()
    {
        int evenCount = 0;
        int oddCount = 0;
        for(int x = 0; x <= list.length; x++)
            if(list[x]%2 == 0)
                evenCount++;
            else
                oddCount++;
        if(isOdd)
            return oddCount;
        else
            return evenCount;
    }
    
    public int[] getAllEvens(int[] array)
    {
        int[] evenArray = new int[countEm()];
        for(int x=0; x<list.length; x++)
            if(list[x] % 2 == 0)
                evenArray[x] == list[x];
        
        return list[];
    }

    public static int[] getAllOdds(int[] array)
    {
        return null;        
    }
}