import java.util.Scanner;
public class nerp
{
    public static void print(String p)
    {
        System.out.print(p);
    }
    public static void println(String p)
    {
        System.out.println(p);
    }
    public static void main()
    {
        Scanner kb = new Scanner(System.in);
        println("Enter an integer");
        unsigned long n = kb.nextInt();
        kb.nextLine();
        for( long i = n-1; i >= 1; i--)
        {
            n = n*i;
        }
        println(""+n);
        println("Enter a word or phrase");
        String s = kb.nextLine();
        for( int i = s.length(); i >= 1; i--)
        {
            println(""+s.substring(0, i-1));
        }
        println("");
        println("");
        print("");
        print(""+s);
        for( int j = 2; j < s.length(); j++)
        {
            println("");
            print(""+s.substring(j-1, j));
            for( int k = 2; k < s.length(); k++)
            {
                print(" ");
            }
            print(""+s.substring((s.length()-(j)), (s.length()-(j-1))));
        }
        println("");
        for( int l = s.length(); l >= 1; l--)
        {
            print(""+s.substring(l-1,l));
        }
    }
}