import java.lang.Math;
public class PatientCheckup 
{
    private String name;
    private int age;
    private double weight;
    private double length;
    public static void main(String []args){}
    
        private static String[] TYPES={" Very severely underweight","Severely underweight" ,"Underweight", "Normal", "Overweight", "Obese"};
        private String bmiType;
    
        
    
    public PatientCheckup(String initName, int iniAge)
    {
        name=initName;
        age=iniAge;
    }
    
    public String getName()
    {
        return name;
    }
    
    public int getAge()
    {
        if(age<0)
        {
            return age*-1;
        }
        return age;
    }
    
    public double getWeight()
    {
        return weight;
    }
    
    public void setWeight(double weight)
    {
        this.weight=weight;
    }
    
    public void setLength(double length)
    {
        this.length=length;
    }
    
    public double getBMI()
    {
        double bmi=weight/(Math.pow(length,2));
        if (bmi<15.0)
        {
            bmiType = TYPES [0];
        }
        else if (bmi>=15.0 && bmi<16.0)
        {
            bmiType = TYPES [1];
        }
        else if (bmi>=16.0 && bmi<18.5)
        {
            bmiType = TYPES [2];
        }
        else if (bmi>=18.5 && bmi <25.0)
        {
            bmiType = TYPES [3];
        }
        else if (bmi >=25.0 && bmi<30.0)
        {
            bmiType = TYPES [4];
        }
        else if (bmi >=30.0)
        {
            bmiType = TYPES [5];
        }
        return bmi;
        
    }
        
    
    public String toString()
    {
       String substring = name.substring(0,1);
        
       return substring+"***"++ " / "+ getAge() + " years" + "( BMI "+ getBMI()+ bmiType;
    }
        
        
}


