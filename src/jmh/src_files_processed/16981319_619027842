    public void actionPerformed(ActionEvent evento) {
        if(evento.getSource()==btnCuentaVacia){
             Vacia();

        }else   if(evento.getSource()==btnCuentaSaldo){
        } else if(evento.getSource()==btnIngresar){
            
        }else if(evento.getSource()==btnRetirar){
        
        }else if(evento.getSource()==btnSalir){
        
        }

    }
    
    public void Vacia(){
   
        Cuenta[] nueva = new Cuenta[50];
        boolean salir = false;
        Icon probar; 
        String nombre = "";
        String apellido = "";
        int numerocuenta =0;
        double valor = 0;
       probar = new ImageIcon("/Users/Barrios/Desktop/fondo.jpeg");
       
        nombre = txtNombre.getText();
        apellido = txtApellido.getText();
        numerocuenta = Integer.parseInt(txtNumeroCuenta.getText());
       
        Cuenta nuevaCuenta = new Cuenta(nombre, valor); /* creamos el objeto llamado nuevaCuenta con la 
                    caracteriztica del constructor creado en la clase cuenta */
                    nueva[numerocuenta] = nuevaCuenta; /* la nueva cuenta la guardamos con el
                    id asignado en el objeto iniciado al principio de esta clase*/ 
                    
                    JOptionPane.showMessageDialog(null,"Se√±or (a) "
                    + nombre + "\nel numero de su cuenta es : " 
                    + numerocuenta + "\nsu saldo inicial es : " + valor,"cajero",JOptionPane.WARNING_MESSAGE,probar);/* mostrasmos en pantalla los 
                    datos solicitados para confirmar la cuenta creada*/

       
        textarea1.append(""+nombre+"");
    
    }