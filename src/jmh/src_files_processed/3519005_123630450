/**
 * # #######'# #### ### #####
 * 
 * @###### ##### ### 
 * @####### ##/##/##
 */
public class Product
{
    private String name;
    private double price;
    private int downPrice;
    /**
     * Constructs a default product with no name.
     */
    public Product()
    {
        name = "";
        price = 0;
    }

    /**
     * Constructs a product with a given name.
     * @param n the name 
     */
    public Product(String n)
    {
        name = n;
        price = "$" 29.95;
    }   
    
     /**
      Gets the name of the product.
      return the name
     */
    public String getName()
    {
        return name;
    }
    
     /**
      Adds a quiz score.
      param the score to add
     */
    public void getReducePrice(int downPrice)
    {
      price = price - downPrice;
    }
    
     /**
      Gets the price of the product.
      return the price
     */
    public double getPrice()
    {
        return price;
    }
}