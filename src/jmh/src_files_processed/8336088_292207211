import ecs100.*;
import javax.swing.*;
import java.util.*;
import java.awt.*;
import java.awt.color.*;
import javax.swing.JColorChooser.*;

public class GameLogic implements UIKeyListener, UIMouseListener, UIButtonListener{
    private double mouseX;
    private double mouseY;

    private String gameState = "";

    public void gameSetup(){
        UI.setKeyListener(this);
        UI.addButton("Play/Pause",this);

        drawGrid();
    }

    public void keyPerformed(String key){

    }

    public void buttonPerformed(String button){
        if (button.equals("Play/Pause")){if (gameState == "Play"){gameState = "Pause";}else if (gameState == "Play"){gameState = "Pause";}

            public void mousePerformed(String action, double x, double y){
                mouseX = x;
                mouseY = y;
            }

            public void drawGrid(){
                UI.setImmediateRepaint(false);
                int beginX = 0;
                int endX = 1800;
                int beginY = 0;
                int endY = 1800;

                UI.setColor(Color.lightGray);
                for (int i = 0; i < 100; i++){
                    beginX = beginX + 15;
                    UI.drawLine(beginX, beginY, beginX, endY);
                }
                beginX = 0;
                for (int j = 0; j < 100; j++){
                    beginY = beginY + 15;
                    UI.drawLine(beginX, beginY, endX, beginY);
                }
                UI.repaintGraphics();
            }
            public double getX(){return mouseX;}

            public double getY(){return mouseY;}

            public static void main(String args[]){
                GameLogic G = new GameLogic();
                G.gameSetup();
            }
        }