public class Equipo
{
    private Participante participante1;
    private Participante participante2;
    private Participante participante3;
    private Ejercicio ejercicio1;
    private Ejercicio ejercicio2;
    private Ejercicio ejercicio3;
    private Ejercicio ejercicio4;
    private Ejercicio ejercicio5;
    private int numeroEquipo;
    private String coach;
    private int tiempoAcumulado;
    private int ejercicioResuelto;
    
    public Equipo (Participante participante1, Participante participante2, Participante participante3, String coach, int numeroEquipo){
        this.participante1 = participante1;
        this.participante2 = participante2;
        this.participante3 = participante3;
        this.coach = coach;
        this.numeroEquipo = numeroEquipo;
        tiempoAcumulado = 0;
        ejercicioResuelto = 0;
        e1 = new ejercicio1 = 'A' + "Facil"+ "Problema1" + 0;  
        e2 = new ejercicio2 = 'B' + "Medio" + "Problema2" + 0;
        e3 = new ejercicio3 = 'C' + "Alto" + "Problema3" + 0;
        e4 = new ejercicio4 = 'D' + "Facil" + "Problema4" + 0;
        e5 = new ejercicio5 = 'E' + "Imposible" + "Problema5" + 0;
    }
    public Participante getParticipante1 (){
        return participante1;
    }
    public Participante getParticipante2 (){
        return participante2;
    }
    public Participante getParticipante3 (){
        return participante3;
    }
    public String getCoach (){
        return coach;
    }
    public int getTiempoAcumulado (){
        return tiempoAcumulado;
    }
    public int ejercicioResuelto (){
        return ejercicioResuelto;
    }
    public int getNumeroEquipo (){
        return numeroEquipo;
    }
    public void setParticipante1 (Participante participante1){
        this.participante1 = participante1;
    }
    public void setParticipante2 (Participante participante2){
        this.participante2 = participante2;
    }
    public void setParticipante3 (Participante participante3){
        this.participante3 = participante3;
    }
    public void setCoach (String coach){
        this.coach = coach;
    }
    public void setTiempoAcumulado (int tiempoAcumulado){
        this.tiempoAcumulado = tiempoAcumulado;
    }
    public void setEjercicioResuelto (int ejercicioResuelto){
        this.ejercicioResuelto = ejercicioResuelto;
    }
    public void setNumeroEquipo (int numeroEquipo){
        this.numeroEquipo = numeroEquipo;
    }
    public void imprimirDatos (){
        System.out.print(participante1 + " "+participante2 + " "+ participante3 + " "+participante1.getInstitucion()+ " "+numeroEquipo+ " "+ejercicioResuelto+" ");
    }
    public void registrarEjercicio (boolean correcto, char letra){
        if(letra == ejercicio1.getLetraDelProblema()){
            if(correcto){
                ejercicioResuelto++;
            }
            else{
                tiempoAcumulado = tiempoAcumulado + 20;
            }
        }
        if(letra == ejercicio2.getLetraDelProblema()){
            if(correcto){
                ejercicioResuelto++;
            }
            else{
                tiempoAcumulado = tiempoAcumulado++;
            }
        }
        if(letra == ejercicio3.getLetraDelProblema()){
            if(correcto){
                ejercicioResuelto++;
            }
            else{
                tiempoAcumulado = tiempoAcumulado++;
            }
        }
        if(letra == ejercicio4.getLetraDelProblema()){
            if(correcto){
                ejercicioResuelto++;
            }
            else{
                tiempoAcumulado = tiempoAcumulado++;
            }
        }
        if(letra == ejercicio5.getLetraDelProblema()){
            if(correcto){
                ejercicioResuelto++;
            }
            else{
                tiempoAcumulado = tiempoAcumulado++;
            }
        }
    } 
    public void generarNombreOriginal (){
        String p1 = participante1.getNombre().substring(0,2);
        String p2 = participante2.getNombre().substring(0,2);
        String p3 = participante3.getNombre().substring(0,2);
        String e1 = coach.toUpperCase();
        p1 = p1.toLowerCase();
        p2 = p2.toLowerCase();
        p3 = p3.toLowerCase();
        
        String NombreGenerado = p1 + p2 + p3 + e1;
    }
}



