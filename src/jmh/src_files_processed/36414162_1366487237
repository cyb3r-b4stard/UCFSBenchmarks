
import objectdraw.*;
import java.awt.*;

public class A3_009_RisingSunPlusPlus_Mehta extends WindowController

{
    private FilledOval yellowcloud;
    private FilledOval graycloud;
    private FilledOval blackcloud;
    
    public static void main (String[]Jargs)
    {
        new A3_009_RisingSunPlusPlus_Mehta().startController(400,400);
        
    }
    
    public void begin()
    
    { blackcloud =new FilledOval(375, 300, 100, 40, canvas);
         blackcloud.setColor( Color.BLACK);
      yellowcloud = new FilledOval)150, 300, 80, 80, canvas);
         yellowcloud.setColor( Color.YELLOW);
         yellowcloud (point.getX(),point.getY(), 10, 10, canvas);
        graycloud = new FilledOval(300, 25, 100, 50, canvas);
         graycloud.setColor( Color.GRAY);
    }
    
    public void onMouseDrag (Location point)
    {
        yellowcloud.move(0,-4);
        graycloud.move (-3,1);
        blackcloud.move (-4, -3);
    }
}
       