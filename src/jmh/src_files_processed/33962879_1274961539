import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.Random;
public class SongSelectMenu extends JFrame
{
    private JFrame Window;
    private JPanel WhatYaSee;
    private JButton song1 ;
    private JButton song2;
    private JButton song3;
    private JButton random;
    private JButton back;
    private JButton exit;
    private static JButton ez;
    private static JButton med;
    private static JButton hrd;
    private static JButton exp;
    int width = 800;
    static String FinalChoice = null;
    static String Diff = null;
    public SongSelectMenu()
    {
     SelectMenu();
    }
    public void SelectMenu()
    {
     Window = new JFrame ("Bass Hero");
     Window.setVisible(true);
     Window.setResizable(true);
     Window.setSize(width,width/4*3);
     Window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
     
     WhatYaSee = new JPanel();
     WhatYaSee.setLayout(null);
     Window.add(WhatYaSee);
     WhatYaSee.setBackground(Color.RED);
     
     song1 = new JButton("Swings & Waterslide");
     song1.setBounds(30,50,150,50);
     WhatYaSee.add(song1);
     song1.addActionListener(new SongSwings());
     
     song2 = new JButton("Magic Mountain");
     song2.setBounds(30,150,150,50);
     WhatYaSee.add(song2);
     song2.addActionListener(new SongMount());
     
     song3 = new JButton("The Moth & The Flame & The Unafraid");
     song3.setBounds(30,250,150,50);
     WhatYaSee.add(song3);
     song3.addActionListener(new SongMoth());
     
     random = new JButton("Random Song");
     random.setBounds(30,350,100,50);
     WhatYaSee.add(random);
     random.addActionListener(new SongRandom());
     
     back = new JButton("Back");
     back.setBounds(20,470,100,50);
     WhatYaSee.add(back);
     
     exit = new JButton("Exit");
     exit.setBounds(580,470,100,50);
     WhatYaSee.add(exit);
     
     ez = new JButton("Easy");
     ez.setBounds(330,60,120,50);
     WhatYaSee.add(ez);
     ez.setVisible(false);
     
     med = new JButton("Medium");
     med.setBounds(330,110,120,50);
     WhatYaSee.add(med);
     med.setVisible(false);
     
     hrd = new JButton("Hard");
     hrd.setBounds(330,160,120,50);
     WhatYaSee.add(hrd);
     hrd.setVisible(false);
     
     exp = new JButton("Expert");
     exp.setBounds(330,210,120,50);
     WhatYaSee.add(exp);
     exp.setVisible(false);
    }  
         static class SongSwings implements ActionListener
    {
       public void actionPerformed(ActionEvent e)
     {
         ez.setVisible(true);
         med.setVisible(true);
         hrd.setVisible(true);
         exp.setVisible(true);
         FinalChoice="SwingsAndWaterSlides";
    }
    }
       static class SongMount implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
         ez.setVisible(true);
         med.setVisible(true);
         hrd.setVisible(true);
         exp.setVisible(true);
         FinalChoice="MagicMountain";
        }
    }
    static class SongMoth implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
         ez.setVisible(true);
         med.setVisible(true);
         hrd.setVisible(true);
         exp.setVisible(true);FinalChoice="YoungUnAfraid";
        }
    }
    static class SongRandom implements ActionListener
    {
     public void actionPerformed(ActionEvent e)
     {
         ez.setVisible(true);
         med.setVisible(true);
         hrd.setVisible(true);
         exp.setVisible(true);Random generator = new Random();
        int ifif = generator.nextInt(3);
        switch (ifif)
        {
        case 0:FinalChoice= "SwingsAndWaterSlides";
        case 1:FinalChoice= "MagicMountain";
        case 2:FinalChoice= "YoungUnAfraid";
        
        }
        }
    }
    static class ToMainMeu implements ActionListener
    {
        public void actionPerformed(ActionEvent e)
        {
         OpeningMenu.main(String[]args);
        }
    }
     public static void main(String[]args)
    {
        new SongSelectMenu();
    }
}
 