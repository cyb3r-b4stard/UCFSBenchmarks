import java.util.Scanner; 
public class Order
{
    Scanner input = new Scanner(System.in);
    int fish;
    int sauce;
    int coleslaw; 
    int soda;
    int servingbowl; 
    int paperbag; 
    int twoPiece; 
    int threePiece; 
    
    
    public Order() 
    {
        fish += 2; 
        sauce += 1; 
        paperbag += 1; 
    }

    public int get2pieceCount()
    {
        System.out.println("How many 2 piece combo's would you like?");
        twoPiece = input.nextInt(); 
        
        return twoPiece 
    }
}