public class Auto extends Fahrzeug
{
    public double tankinhalt;
    protected double verbrauch,tankmax;
    protected String farbe,nummernschild;
    protected int sitzplätze;
    protected int kfznr, kfznrnr;
    
    int nummernzähler()
    {
    kfznrnr=kfznr++;
    return kfznrnr;
   }
    public Auto()
    {
        super();
        double tankinhalt = 0.0;
        
        nummernschild = "FFB-KD-" + nummerzähler.int;
    }

    
    /*
    public Auto(double newtankinhalt,String newmarke,String newtyp,String newnummer,boolean geparkt)
    {
        super();
        tankinhalt = newtankinhalt;
        marke = newmarke;
        typ = newtyp;
        nummer = newnummer;
        geparkt = newgeparkt;
    }
    */
    public boolean fahren(double strecke, double verbrauch)
    {
        if(tankinhalt >= (strecke / 100) * verbrauch)
        {
            tankinhalt = tankinhalt - ((strecke / 100) * verbrauch);
            kmStand = kmStand + strecke;
            return(true);
        }
        else
        {
            System.out.println("mit dem Auto konnte nicht gefahren werden, bitte tanken");
            return(false);
        }
    }
    
    public boolean tanken(double liter)
    {
    if(tankinhalt <= tankmax && liter <= tankmax - tankinhalt)
    {
    tankinhalt = tankinhalt + liter;
    return(true);
    }
    else
    {
    tankinhalt=tankmax;    
    System.out.println("es wurde zu Viel getankt das tankmaximum ist erreicht");    
    return(false);
    }
    }

}