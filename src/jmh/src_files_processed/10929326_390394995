public class Arbeiter extends Mitarbeiter
{
    private int arbeitsstunden;
    private double lohnsatz;
    
    public void setStunden(int pStunden)
    {
        arbeitsstunden = pStunden;
    }
    
    public void setLohnsatz (double pLohnsatz)
    {
        lohnsatz = pLohnsatz;
    }
    
    public int getStunden()
    {
        return arbeitsstunden;
    }
    
    public double getLohnsatz()
    {
        return lohnsatz;
    }
    
    public void berechneLohn(double pLohn)
    {
        arbeitsstunden*lohnsatz;
    }
    
    public double getLohn()
    {
        return pLohn;
    }

}