class C2hw2
{
    public static void main(String[] args)
    {
        double a, b, c, d, e, sum, average;
        a = 1.5;
        b = 22.4;
        c = -44.8;
        d = 0.333;
        e = 1.123;
        sum = a + b + c + d + e;
        average = sum / 5;
        System.out.println("The sum of 1.5, 22.4, -44.8, 0.333, and 1.123 is " sum);
        System.out.println(average);
    }
}
    