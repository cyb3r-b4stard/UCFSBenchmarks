
import objectdraw.*;
import java.awt.*;

public class Diamonds extends FrameWindowController {

    private static final int RESET_BOX_SIZE = 50;
    private static final Location MESSAGE_LOCATION = new Location(10, 10);  
    private static final int LINE_INCREMENT = 2;

    private FilledRect resetBox;
    

    public void begin() {
        resize(800,800);
        
        new Text("Drag the mouse!",MESSAGE_LOCATION,canvas);
        
        resetBox=new FilledRect(canvas.getWidth()/2-RESET_BOX_SIZE/2,canvas.getHeight()/2-RESET_BOX_SIZE/2, RESET_BOX_SIZE,RESET_BOX_SIZE,canvas);
        resetBox.setColor(Color.RED);
        
        
        
        
        
        
        
        

        
    }

    public void onMousePress (Location point) {
        if (resetBox.contains(point)){
          canvas.clear();  
          
          new Text("Drag the mouse!",MESSAGE_LOCATION,canvas);
          
          resetBox=new FilledRect
          
          
          
        }
    }

    }

    public void onMouseDrag (Location point) {

    }

}