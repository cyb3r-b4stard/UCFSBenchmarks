
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Dummy
{
    public String dummyName;
    private String specialAction;
    private String speak;
    /**
     * Defines the constructor "dummy"
     * @params dummyName sets the name of the dummy, specialAction definds the dummy's "special action"
     */
    public Dummy (String nameChoice,String actionChoice)
    {
        dummyName = nameChoice;
        specialAction = actionChoice;
    }
    
    Public string returnName()
    {
        return dummyName;
    }
    /**
     * makes the dummy perform the special action defined in the constructor
     */
    public void action()
    {
        System.out.println (dummyName + " " + specialAction);
    }

    /**
     * makes the dummy speak an input string
     */
    public void speak(String speechChoice)
    {
        System.out.println (dummyName + " says " + speechChoice);
    }
}