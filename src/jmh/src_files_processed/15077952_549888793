import java.util.Scanner;
public class CaesarShiftTester
{
    public static void main(String[] args)
    {
        System.out.println("Decode or encrypt Caesar Shifts!");
        System.out.println("--------------------------------");
        System.out.println("Type e for encryption");
        System.out.println("Type d for decryption");
        System.out.println("Type anything else to quit");
        
        Scanner in = new Scanner(System.in);
        String input = "1";
        int key;
        String message = "";
        while((input.equalsIgnoreCase("e")) || (input.equalsIgnoreCase("d")))
        {
            System.out.println("e or d?");
            input = in.next();
            if((input.equalsIgnoreCase("e")) || (input.equalsIgnoreCase("d"))
            {
                System.out.println("Enter a shift key value (0-25): ");
                key = in.next().toInteger();
                System.out.println("Enter your message: ");
                message = in.nextLine();
            }
            else
            {
                System.out.println("Thank you for your time.");
            }
        }
    }
}