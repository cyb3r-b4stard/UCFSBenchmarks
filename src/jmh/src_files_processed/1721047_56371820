public class BankAccount
{
    public double balance;
    public String name;
    public BankAccount(double a,String b)
    {
        balance=a;
        name=b;
    }
    
    public void deposit(double mon)
    {
        balance=balance+mon;
    }
    
    public void withdraw(double mon)
    {
        balance=balance-mon;
    }
        public void result(String amount)
    {
        "The "+name+"account balance is, "+"$"+balance);
    }
}