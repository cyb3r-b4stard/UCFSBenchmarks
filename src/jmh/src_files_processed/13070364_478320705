import javax.swing.*;
import java.awt.*;
import java.util.Random;

public class FencePanel extends JPanel
{
    private Color colors[] = {Color.red, Color.orange, Color.green, Color.blue, Color.yellow, Color.pink};
    
    public FencePanel()
    {
        setPreferredSize(new Dimension (1000,500));
    }
    
    public void paintComponent(Graphics g)
    {
        super.paintComponent(g);
        
        g.fillRect(0,((getHeight()/2) - 100),getWidth(),25);
        g.fillRect(0,((getHeight()/2) + 75),getWidth(),25);
        
        for(int i =0;i<getWidth();i=i+45)
        {
            g.setColor(colors[rnd.nextInt(colors.length)];
            g.fillRect(i+20,(getHeight()/2 -25),25,300);
        }
        
        Random rnd = new Random();
        
    }
}
