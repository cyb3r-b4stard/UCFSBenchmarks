
/**
 * ####### ##### ### ### ######## #########. 
 * 
 * @###### ####### ########
 * @####### #
 */
public class Student
{
    private String fName;
    private String lName;
    private int idNum;
    private int grade;
    private int month;
    private int day;
    private int year;
    private String[]classes;

    /**
     * Constructor for objects of class Student
     */
    public Student()
    {
        fName="John";
        lName="Doe";
        idNum=0;
        grade=0;
        month=1;
        day=1;
        year=1999;
        for(int i=0;i<classes.length;i++)
        {
            classes[i]=" ";
        }
    }
    
    /**
     * Constructor used for name of student
     * 
     * @param fName: input for the first name
     * @param lName: input for the last name
     */
    public Student(String firstName,String lastName)
    {
        this();
        this.fName=firstName;
        this.lName=lastName;
    }
   
    public String getFullName()
    {
        return fName+" "+lName;
    }
    
    /**
     * setter method for the student ID number
     * 
     * @param newIDNum The new ID number to set the idNum
     */
    public void setIDNum(int newIDNum)
    {
        if(newIDNum == 6)
        {
            idNum=newIDNum;
        }
        else
        {
            System.out.println("Please enter a valid ID number: ");
        }
    }
    
    public int getIDNum()
    {
        return idNum;
    }
    
    /**
     * setter method for the student grade
     * 
     * @param newGrade The new grade level to set the grade
     */
    public void setGrade(int newGrade)
    {
        if(newGrade<8 && newGrade>13)
        {
            grade=newGrade;
        }
        else
        {
            System.out.println("Please enter a valid grade level: ");
        }
    }
    
    public int getGrade()
    {
        return grade;
    }
    
    /**
     * setter method for the month, day, and year
     * 
     * @param newMonth, newDay, newYear
     */
    public void setDate(int newMonth, int newDay, int newYear)
    {
        if(newMonth>0 && newMonth<13)
        {
            month=newMonth;
        }
        else
        {
            System.out.println("Please enter a valid month: ");
        }
        
        if(newDay>0 && newDay<32)
        {
            day=newDay;
        }
        else
        {
            System.out.println("Please enter a valid day: ");
        }
        
        if(newYear<2015)
        {
            year=newYear;
        }
        else
        {
            System.out.println("Please enter a valid year: ");
        }
    }
    
    public int getMonth()
    {
        return month;
    }
    public int getDay()
    {
        return day;
    }
    public int getYear()
    {
        return year;
    }
    
    public Student(String[]classes)
    {
        new classes[6];
    }
}