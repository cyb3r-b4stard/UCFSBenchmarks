public class DollarCents
{

    public static void main(String args [])
    {
       int dollars;
       int cents;
       String inputNumberString;
       int inputNumber;
       int calculatedAnswer;
       int javax.swing.JOptionPane;
       inputNumberString = JOptionPane.showInputDialog("Geben Sie die Cent ein: ");

       inputNumber = Integer.parseInt(inputNumberString);

       dollars = inputNumber / 100;
       cents = inputNumber % 100;

       System.out.println ("Das ergibt: $"+ dollars +"."+ cents);
     
    }
}

