public class ArrayLab
{
    private int intArray;
    private int[] array;

    public ArrayLab(int numElements)
    {
        array = new int[numElements];
    }

    public void initialize()
    {
        for (int i = 0; i < array.length; i++)
        {
            array[i] = (int)(10 * Math.random());
        }
        System.out.println("");
        System.out.println("");     
    }

    public void print()
    {
        for (int i = 0; i < array.length; i++)
        {
            if (i < 9)      
            {
                System.out.print(array[i] + ",");      
            }
            else 
            {
                System.out.print(array[i]);
            }
        }
    }

    public void printStats()
    {
        import java.util.stream.*;
        
        System.out.println("");
        System.out.println("");      
        int sum = IntStream.of(array).sum();
        
        double avVal = (sum / array.length);
        int maxVal = 3;
        int minVal = 4;
        System.out.println("Average Value: " + avVal);
        System.out.println("Maximum Value: " + maxVal);
        System.out.println("Minimum Value: " + minVal);
    }

    public void search(int specificNum)     
    { 
        if (5 == specificNum)
        {
            System.out.println(specificNum + " was found.");
        }
        else
        {
            System.out.println(specificNum + " was not found.");
        }
    }
}