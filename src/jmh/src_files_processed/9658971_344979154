
import java.util.Scanner;
import java.lang.Object;
public class MathMethods{

    public static void Average(){
        Scanner reader= new Scanner(System.in);
        int counter=0;
        double n;
        double number;
        double sum=0;
        double average;
        System.out.print("How many numbers would you like to enter");
        n=reader.nextDouble( );
        while(counter<n){
            System.out.print("Enter a number");
            number=reader.nextDouble( );
            sum+=number;
            counter++;
        }
        average=sum/n;
        System.out.print("The average of the numbers is" + " " + average);
    }
    

    public static void LetterGrade(){
        Scanner reader=new Scanner(System.in);
        double numbergrade;
        double lettergrade;
        System.out.println("Enter your number grade");
        numbergrade=reader.nextDouble( );
        if(numbergrade<= 64){
            System.out.println("Your grade is a F");
        }
        if(numbergrade>=65 && numbergrade<=69){
            System.out.println("Your grade is a D");
        }
        if(numbergrade>=70 && numbergrade<= 79){
            System.out.println("Your grade is a C");
        }
        if(numbergrade>=80 && numbergrade<= 89){
            System.out.println("Your grade is a B");
        }
        if(numbergrade>=90 && numbergrade<=100){
            System.out.println("Your grade is a A");
        }
    }

    public static void QuadraticFormula(){
        Scanner reader=new Scanner(System.in);
        double a;
        double b;
        double c;
        double solution1;
        double solution2;
        System.out.println("Enter the a value for the polynomial");
        a=reader.nextDouble();
        System.out.println("Enter the b value for the polynomial");
        b=reader.nextDouble();
        System.out.println("Enter the c value for the polynomial");
        c=reader.nextDouble();
        solution1=(-b+Math.sqrt(Math.pow(b,2)-4*a*c))/(2*a);
        solution2=(-b-Math.sqrt(Math.pow(b,2)-4*a*c))/(2*a);
        System.out.println("Your solutions are" + " " + solution1 + " " + solution2);

    }

    public static void Factorial(){
        Scanner reader=new Scanner(System.in);
        System.out.println("Enter a number that you would like to find the factorial of");
        int num=reader.nextInt();
        int fact=1;
        int x=num;
        while(x>0){
            fact*=x;
            x--;
        }
        System.out.println("The factorial of" + " " + num+ " " + "is" + " " + fact);
    }

    public static void Permutations (){
        Scanner reader=new Scanner(System.in);
        System.out.println("Enter the total number of objects");
        int object=reader.nextInt();
        System.out.println("Enter the number of items you would like to select");
        int items=reader.nextInt();
        int x=object;
        int y=items;
        int perms=1;
        while(x>(object-y)){
            perms*=x;
            x--;
        }
        System.out.println("The total number of permutations is" + " " + perms);
       
    }
    public static void Combinations (){
        Scanner reader=new Scanner(System.in);
        System.out.println("Enter the total number of objects");
        int object=reader.nextInt();
        System.out.println("Enter the number of items you would like to select");
        int items=reader.nextInt();
        int fact1=1;
        int x=object;
        int y=items;
        int fact2=1;
        int z=x-y;
        int fact3=1;
        while(x>0){
            fact1*=x;
            x--;
        }
        while(y>0){
            fact2*=y;
            y--;
        }
        while(z>0){
            fact3*=z;
            z--;
        }
        int combs=(fact1)/(fact2*fact3);
        System.out.println("The total number of combinations is" + " " + combs);
    }
    public static void Triangle (){
        Scanner reader=new Scanner(System.in);
        System.out.println("Enter the first length");
        int length1=reader.nextInt();
        System.out.println("Enter the second length");
        int length2=reader.nextInt();
        System.out.println("Enter the third length");
        int length3=reader.nextInt();
        if(length1+length2<=length3 || length2+length3<=length1 || length1+length3<=length2){
            System.out.println("A triangle cannot be formed");
        }
        if(length1=length2 &&length2=length3){
            System.out.println("An equilateral triangle can be formed");
        }
        if(length1!=length2 || length2!=length3){
            System.out.println("A scalene triangle can be formed");
        }
        if(length1=length2 || length1=length3 || length2=length3){
            System.out.println("An isoceles triangle can be formed");
        }
    }
}

            
               




