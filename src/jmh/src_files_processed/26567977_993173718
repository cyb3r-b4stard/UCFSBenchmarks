public class Vigenere
{
   private String originalText;
   private String verschluesselung;
   private String entschluesselung;
   private String schluesselWort;
   private char schluessel;
    
    public Vigenere()
    {
       originalText = "ORIGINALTEXT";
       verschluesselung = "VERSCHLUESSELUNG";
       entschluesselung = "ENTSCHLUESSELUNG";
       schluesselWort = "SCHLUESSELWORT";
    }
    
    public void setzeOriginalText (String text)
    {
        originalText = text.toUpperCase();
    }
    
    public String gibOriginalText ()
    {
        return originalText;
    }
    
    public String gibEntschluesselung ()
    {
        return entschluesselung;
    }

    public String gibVerschluesselung ()
    {
        return verschluesselung;
    }
    
    public String gibSchluesselWort ()
    {
        return schluesselWort;
    }
    
    public void setzeSchluesselWort (String text)
    {
        schluesselWort = text.toUpperCase();
    }
    
    private void zerlegeSchluesselWort (char buchstabe)
    {
        schluesselWort = buchstabe.CharAt(buchstabe)
    }
    
    private char verschluesselEinZeichen (char zeichen)
    {
        int zahl = (int) zeichen;
        int key = (int) schluessel;
        int ergebnis = ((zeichen-65) + (schluessel-65))%26 + 65;
        return (char) ergebnis;
    }
    
    private char entschluesselEinZeichen (char zeichen)
    {
        int zahl = (int)zeichen;
        int key = (int) schluessel;
        int ergebnis = ((zeichen-65) - (schluessel-65))%26 + 65;
        return (char) ergebnis;
    }
}