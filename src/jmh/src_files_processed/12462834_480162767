        private void cadastrarAluno(){
            
                System.out.println("================================================================================");
                System.out.println("CADASTRAR UM NOVO ALUNO");
                System.out.println("Digite o nome do Aluno: ");
                String nomeDoAluno = teclado.nextLine();
                System.out.println("Digite o número da matricula: ");
                int matricula = teclado.nextInt();
                Aluno aux = new Aluno(nomeDoAluno, matricula);
                adicionaAluno(aux)
        
        }
