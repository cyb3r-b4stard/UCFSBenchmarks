public class Die {
    private int numSides;
    private int currentNum;
    public Die(int numSides){
        this.numSides=numSides;
    }
    
    public Die () {
        numSides = 6;
        roll();
    
    public int roll () {
       currentNum = (int) (Math.random () * numSides + 1);
        return currentNum;
    }
   public int getCurrentNum () {
       return currentNum;
    
    
    
    
    
    }
    
    public int cheat (int newNum) {
        if ( newNum <= numSides && newNum > 0){
        currentNum = newNum;
        
    }
        return currentNum;
   }
}