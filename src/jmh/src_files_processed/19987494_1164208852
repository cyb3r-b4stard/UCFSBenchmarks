public class Cryptool {
    
    private GUI gui;
    
    public Cryptool() {
        gui = new GUI(this);
    }
    
    /*
    * Hilfsmethode, um einen einzelnen Buchstaben zu ver-/entschluesseln
    * Sie soll sowohl in der Methode verschluesseln, als auch in der
    * Methode entschluesseln verwendet werden.
    */
    private char buchstabeVerschluesseln(char buchstabe, int shift) {
        int zahl = (int)buchstabe;
        zahl = shift += 3;
        buchstabe = char buchstabe;
        
        return ' ';
    }
    
    public void verschluesseln() {
        String klartext = gui.getKlartext(); 
        String schluessel = gui.getKey();    
        char[] buchstaben = klartext.toCharArray(); 
        
        
        String geheimtext = new String(buchstaben); 
        gui.setGeheimtext(new String(buchstaben)); 
    }
    
    public void entschluesseln() {
        String geheimtext = gui.getGeheimtext();
        String schluessel = gui.getKey();   
        
        
        gui.setKlartext(geheimtext); 
    }
    
    /*
    * Hilfsmethode, um einen Buchstaben in eine Zahl umzuwandeln
    */
    private int buchstabeToZahl(char buchstabe) {
        int zahl = (int)buchstabe;
        zahl -= 65;
        return zahl % 26; 
    }
    
    /*
    * Hilfsmethode, um eine Zahl in einen Buchstaben umzuwandeln
    */
    private char zahlToBuchstabe(int zahl) {
        zahl = zahl % 26;  
        zahl += 65;
        return (char)zahl;
    }
    
    
}