import java.util.  Scanner;
public class MiniCalculadora
{
     public static void main (String   []  args  )
    {
        Scanner entrada = new Scanner (System.in);
        System.out.println( "PROGRAMA MINICALCULADORA");
        int OP;
        double valor1;
        double valor2;
        double valor resultado;
        System.out.println( "INTRODUCE EL PRIMER VALOR");
        valor 1=entrada.nexDouble();
        System.out.println( "INTRODUCE EL SEGUNDO VALOR");
        valor 2=entrada.nexDouble();
        System.out.println( "INTRODUCE LA OPERQACION A REALIZAR 1 SUMA,2 RESTA,3 MULTIPLICACION,4 DIVICION");
        OP=entrada.nexInt();
        switch(OP){
            case 1:
            resultado=valor 1 + valor 2;
            System.out.println( "EL VALOR DE LA SUMA:" + resultado);
            break;
            case 2:
            resultado=valor 1 + valor 2;
            System.out.println( "EL VALOR DE LA RESTA:" + resultado);
            break;
            case 3:
            resultado=valor 1 + valor 2;
            System.out.println( "EL VALOR DE LA MULTIPLICACION:" + resultado);
            break;
            case 4:
            resultado=valor 1 + valor 2;
            System.out.println( "EL VALOR DE LA DIVICION" + resultado);
            break;
            default:
            System.out.println( "LA OPCION ELEGIDA ES INCORRECTA");
            break:
        }
    }
}
    