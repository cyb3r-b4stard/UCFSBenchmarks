public class WholeNumber
{
    private int value;
    public WholeNumber(int n){
    this.value=n;
    if (n<0){
        throw new IllegalArgumentException("The inputted integer must be positive!");
    }
}
public int sum1ToN(){
    value++;
    return value;
}
public int sum1ToNOdd(){
    return value;
}
public static void main (string [] args){
    WholeNumber w1= new WholeNumber(-1);
    WholeNumber w2= new WholeNumber(4);
}