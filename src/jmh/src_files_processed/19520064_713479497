import javax.swing.JOptionPane;
public class LoanPayment
{
    public static void main(String args[])
    {
        String firstUserInput, secondUserInput, thirdUserInput;
        
        int years;
        double interestRate, loanAmount, monthlyPayment;
        
        firstUserInput =
            JOptionPane.showInputDialog(null, "Enter Anual Interest Rate (As a percentage): ",
                "Annual Rate", JOptionPane.QUESTION_MESSAGE);
        secondUserInput =
            JOptionPane.showInputDialog(null, "Enter Loan Amount: ",
                "Loan Principal", JOptionPane.QUESTION_MESSAGE);
        thirdUserInput =
            JOptionPane.showInputDialog(null, "Enter Number of Years: ",
                "Loan Durration", JOptionPane.QUESTION_MESSAGE);
        
        interestrate = Double.parseDouble(firstUserInput);
        loanamount = Double.parseDouble(secondUserInput);
        years = Int.parseInt(thirdUserInput);
        
        monthlyPayment = loanAmount*interestRate/(1-(Math.pow(1/(1+interestRate),years*12)));
         JOptionPane.showMessageDialog(null,
         "Loan Amount: $" + loanAmount "\n"
         "Interest Rate: " + interestRate "\n"
         +"Number of Years: " + years "\n"
         +"Monthly Payment: $" + monthlyPayment "\n","Basic Loan Information", JOptionPane.PLAIN_MESSAGE);
         
         
         
        
    }
}