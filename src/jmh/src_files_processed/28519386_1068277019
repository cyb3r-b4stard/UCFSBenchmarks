 */
public class Triangle
{
    private int side1;
    private int side2;
    private int side3;

    /**
     * Constructor to set the 3 colors of the figure
     * @param side1 = color of the 1st side
     * side2 = color of the 2nd side
     * side3 = color of the 3rd side
     */
    public Triangle(int side1, int side2, int side3)
    {
        int x = side1;
        int y = side2;
        int z = side3;
    }
    /**
     * Return the color of the left side of the triangle
     * @return the number corresponding to the left side
     */
    public int getLeftColor()
    {
        return side1;
    }
    /**
     * Return the color of the right side of the triangle
     * @return the number corresponding to the right side
     */
    public int getRightColor()
    {
        return side2;
    }
    /**
     * Return the color of the bottom side of the triangle
     * @return the number corresponding to the bottom side
     */
    public int getBottomColor()
    {
        return side3;
    }
    /**
     * 
     */
    public boolean compareColors(
}