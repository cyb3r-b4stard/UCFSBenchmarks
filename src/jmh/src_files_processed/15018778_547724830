 */
public class EmployeeTest
public class ProductionEmployee extends Employee
{ 
    private double baseHourlyPayRate; 

    public ProductionEmployee(String nam, int num, int year, double payRate) 
    { 
        super(nam,num,year); 
        this.baseHourlyPayRate = payRate; 
    } 

    public void setBaseHourlyPayRate(double payRate) 
    { 
        this.baseHourlyPayRate = payRate; 
    } 

    public double getBaseHourlyPayRate()
    { 
        return this.baseHourlyPayRate; 
    } 

    public double calcPayRate() 
    { 
        DateFormat datePattern = new SimpleDateFormat("yyyy"); 
        Date dateF = new Date(); 
        int yearsDifference = Integer.parseInt(datePattern.format(dateF)) -super.getYearOfHire();

        for (int i=0; i<yearsDifference; i++) 
        {
            this.baseHourlyPayRate += 1;  
        } 
        return this.baseHourlyPayRate; 
    }

    public String toString() 
    { 
        return super.toString() + "\n" + "Annual pay rate: " + calcPayRate(); 
    } 
}