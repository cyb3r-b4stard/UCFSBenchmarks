
/**
 * ###### ## ## ########
 * 
 * @###### (########## ######) 
 * @####### (## ##-#-##)
 */
public class Cliente
{
    private String rut, nombre, apellido;
    private int edad, valor, horas;
    private boolean estado;
    private char sexo;
    
    public Cliente(){
    rut = "";
    nombre = "";
    apellido = "";
    edad = 0;
    valor = 0;
    horas = 0;
    estado = false;
    sexo ='M';
    
    }
    public Cliente (String rut,String nombre,String apellido,char sexo, boolean estado, int valor, int horas, int edad){
      this.rut = rut; 
      this.nombre=nombre;
      this.apellido=apellido;
      this.edad=edad;
      this.valor=valor;
      this.horas=horas;
      this.estado=estado;
      this.sexo=sexo;
    }
    public String getRut(){
        return rut;
    }
    public String getNombre(){
        return nombre;
    }
     public String getApellido (){
      return apellido;
      
    }
    public int getEdad(){
        return edad;
    }
    public int getValor(){
        return valor;
    }
    public int getHoras(){
        return valor;
    }
    public boolean getEstado(){
        return estado;
    }   
    public char getSexo(){
        return sexo;
    }    
    public void setNombre (String nombre){
     this.nombre=nombre;
    }
    public void setApellido (String apellido){
     this.apellido=apellido;
    }
    public void setEdad (int edad){
     this.edad=edad;
    }
    public void setValor (int valor){
     this.valor=valor;
    }
    public void setHoras (int horas){
     this.horas=horas;
    }
    public void setEstado (boolean estado){
     this.estado=estado;
    }
    public void setSexo (char sexo){
     this.sexo=sexo;
    }
    public void imprimirFichaCliente(){
        System.out.println("--------------------------------");
        System.out.println("  Cliente:"+ nombre + " " + apellido);
        System.out.println("--------------------------------");
        System.out.println("Mensualidad: $" + valor);
        System.out.println("Horas Semanales: "+ horas + "Horas");
    }
    
    public void rebajarMensualidad(double porcentaje){ 
         valor = (int) (valor - valor * porcentaje);   
        }
        
    public int obtenerHorasDisponibles( int maximo){
        int disponibles;
        disponibles = maximo - horas;
        return disponibles;
    }
    public void aumentarValorMensualidad(int nuevoValor){
        valor = valor + nuevoValor;
    }
    public void inactivarCliente(){
        estado= false 
    }
    }
    