import java.util.ArrayList;
public class Club{
    private String clubName;
    private ArrayList<Team> teams;
    
    public Club(String clubName){
        this.clubName = clubName;
        teams = new ArrayList<>();
    }
    
    public void addTeam(Team newTeam){
        teams.add(newTeam);
    }
    
    public void deleteTeam(String teamName){
        int index = 0;
        while(index >= 0 && index < teams.size()){
            if(teams.get(index).getTeamName() == teamName){
                teams.remove(index);
            }
            else{
                index++;
            }
        }
    }
    
    public ArrayList wonMostGames(){
        int index = 0;
        ArrayList<Team> mvt = new ArrayList<Team>(); 
        while(index >= 0 && index < teams.size()){
            if(teams.get(index).mostGamesWon()){
                mvt.add(teams.get(index));
                index++;
            }
            else{
                index++;
            }
        }
        return mvt;
    }
    
    public Team searchMember(String memberName){
        int index = 0;
        while(index >= 0 && index < teams.size()){
            if(teams.get(index).getMember(memberName){
                return teams.get(index);
            }
            else{
                index++;
            }
        }
        return null;
    }
    
}