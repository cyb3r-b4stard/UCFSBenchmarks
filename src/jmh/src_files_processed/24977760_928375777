import java.awt.*;
import javax.swing.*;

public class Histogram
{
    
    public int[] numbers;
    public int maxValue;
    public String[] labels;
    public JFrame jframe;
    
    public static void main(String args[])
    {
        int[] numbers = new int[] { 70, 100, 80, 30 };
        String[] labels = new String[] { "UK", "DK", "BR", "FR" };
        Histogram h1 = new Histogram(numbers, labels);
    }
    
    public Histogram (int[] numbers, String[] labels)
    {
        this.numbers = numbers;
        this.labels = labels;
        Histopanel hp = new Histopanel();
        
        maxValue = 0;
        for(int number : numbers)
        {
            if ( number > maxValue) 
            {
                maxValue = number;
            }
        }
    }
    
    public class Histopanel extends JPanel
    {
        public Histopanel()
        {
            setupWindow();
        }
        
        @Override
        protected void paintComponent(Graphics g) {
            super.paintComponent(g);
            g.setColor(Color.WHITE);
            g.fillRect(0,0,700,500);
            
            int height = 200;
            int width = 5;
            
            
            g.setColor(Color.BLACK);
            g.drawRect(100,100,width,height);
            g.fillRect(100,100,width,height);
            
            g.setColor(Color.BLACK);
            g.drawRect(100,300,height,width);
            g.fillRect(100,300,height,width);
            
            
            
            for(int i = 1; i < numbers.length + 1; i++)
            {
                g.setColor(Color.BLACK);
                g.drawRect(,15,3);
                g.fillRect(,15,3);
            }
           
            for(int i = 0; i < labels.length - 1; i++)
            {
                
            }
            
            for(int i = 0; i < numbers.length - 1; i++)
            {
                
            }
            
        }
        
        public void setupWindow()
        {
            jframe = new JFrame("Histogram");
            jframe.setVisible(true);
            jframe.setSize(700, 500);
            jframe.add(this);
            jframe.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        }
    
    }
}