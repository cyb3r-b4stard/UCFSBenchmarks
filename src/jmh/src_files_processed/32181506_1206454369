
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.Ellipse2D;
import javax.swing.JApplet;
import javax.swing.JOptionPane;



public class Applet extends JApplet
{
    private static double x,y;
   
    public void paint(Graphics g )
    {
     String X=JOptionPane.showInputDialog("Jepni x");
     String Y=JOptionPane.showInputDialog("Jepni y");
     X=Double.parseDouble(X);
     Y=Double.parseDouble(Y);
     Graphics2D g2=(Graphics2D)g;
     Ellipse2D.Double e=new Ellipse2D.Double(0,0,x,y);
     String s="";
     s+="Perimeter="+perimeter(e)+"Siperfaqja="+area(e)
     g2.drawString(s,10,10);
    }

    
    public static double perimeter(Ellipse2D.Double e){
        return 0;
}
public static double area(Ellipse2D.Double e){
    return Math.PI*e.getWidth()/2*e.getHeight()/2;
}