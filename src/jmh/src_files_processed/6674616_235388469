import javax.swing.JOptionPane;
public class LinkList
{
    EmpData head;
    
    LinkList()
    {
        head=null;
    }
    EmpData getHead()
    {
        return head;
    }
    
    public void addNode(int ID,int HP, String Name, String R, String G,EmpData addnext)
    {
        EmpData newEmpData = new EmpData(ID, HP, Name, R,G,addnext);
        newEmpData.setEmpData(head);
        head=newEmpData;
        JOptionPane.showMessageDialog(null,"Node added.")
      
    }
    
    public void deleteNode()
      {

               if(head==null)
                  JOptionPane.showMessageDialog(null,"No item in the list.");
               else
                  head=head.getNext();
                  JOptionPane.showMessageDialog(null,"Node Deleted....");
    }

/*public  void addNodeLast(int item)
