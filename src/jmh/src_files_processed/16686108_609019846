import java.util.ArrayList;

/**
 * ##### ###### #### ####### ### #### ## ### ###### ### ### ######### #### ######## ### #########
 * 
 * @###### ####### ### ###### 
 * @####### ##.##.####
 */
public class Person
{
    private String firstname;
    private String surname;
    private Address address;
    private ArrayList<Address> address_list;
    

    /**
     * Constructor for objects of class Person
     */
    public Person(String firstname, String surname)
    {
        this.firstname = firstname;
        this.surname = surname;
        address_list = new ArrayList<Address>();
    }

    /**
     * add_address method - assigns a new address to the person
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void print_address()
    {
        if (address_list.isEmpty()) {
        System.out.println("There are no addresses linked to " + firstname + " " + surname);
    }
    else {
        int index = 0;
        Address address_print;
        System.out.println();
        System.out.println(firstname + " " + surname);
        System.out.println();
        while (index < address_list.size()) {
            adress_print = address_list.get(index);
            System.out.println(address_print.housenumber);
    }
    }
    
    /**
     * add_address method - assigns a new address to the person
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void add_address(int housenumber, String street, String town, String postcode1, String postcode2)
    {
        if (address_list.size() < 3) { 
        address_list.add(new Address(housenumber, street, town, postcode1, postcode2));
        System.out.println("The number of addresses linked to person " + firstname + " " + surname + " is now " + address_list.size());
    }
    else {
        System.out.println("The number of addresses linked to this person is already at the maximum of 3");
    }
    }
}