import java.util.*;
import java.text.*;

public class Assignment5
{
    public static void main(String[] args)
    {
        Scanner numscan = new Scanner(System.in);
        DecimalFormat f = new DecimalFormat("#.#");
        System.out.println("Please enter coordinates of the point separated by space: ");
        
        int x = numscan.nextInt();
        int y = numscan.nextInt();
        
        double p = Math.sqrt(x * x + y * y);
    
        System.out.println("The distance from the point the origin is: " + f.format(p));
        System.out.println("\n");
       
        
       
        
        System.out.println("Enter the length of the pendulum. ");
        
        int l = numscan.nextInt();
        
        double w = 2 * Math.PI * Math.sqrt(l / 9.8);
        System.out.printf("%1$2f", w);
        System.out.println("\n");
        
        System.out.println("What is your name? ");
        Scanner wordscan = new Scanner(System.in);
        String name;
        name = wordscan.nextLine();
        
        System.out.println("What is a number, " + name + "?");
        int b = numscan.nextInt();
        System.out.println("\n");
        
        Random rand = new Random();
        int num1 = rand.nextInt(5);
        
        
        System.out.println("Hello " + name + ".");
        System.out.println("The random number from 0 to 5 is: " + num1);
        System.out.println("\n");
        
       
        int num2 = rand.nextInt(50) + 10;
        int num3 = rand.nextInt(50) + 10;
        int num4 = rand.nextInt(50) + 10;
        
        System.out.println("The numbers are: " + num2 + ", " + num3 + ", " + num4);
        System.out.println("The highest number is: " + Math.max(num2, num3, num4);
        System.out.println("The lowest number is: " + Math.min(num2, num3, num4);
     
        
    }
}
        
        