 */
public class Basket
{
    
    ArrayList<Product> items = new ArrayList<Product>();
    
    
   
    
    public void addProduct(Product Artikel)
    {
        items.add(Artikel);
        
        
        
    }
    
    public void print()
    {
        for(Product Artikel : items)
        {
        Artikel.print();
        }
    }
    
    public void getMostExpensive()
    {
        Product mostExpensive = items.get(0);
        
        for(Product Artikel : items)
        
            if(mostExpensive.getPrice() < Artikel.getPrice())
            {
                mostExpensive = Artikel;
            }
            mostExpensive.print();
        
        
    }
    
    public void getTotalPrice()
    {
    price = 0
    for(Product Artikel : items)
    Artikel.getPrice()
    
    
    
    }
    
    public void printSummary()
    {
        print();
    }
    
    
}