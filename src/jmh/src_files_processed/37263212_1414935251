
public class KREIS
{
    private int x, y;   
    private int radius;
    private int farbe;
 	public KREIS()
	{
		x = 100;
		y = 150;
		radius = 40;
		farbe = 4;
	}
    
	public void aendereMitte(int xNeu, int yNeu)
	{
	    x = xNeu;
	    y = yNeu; 
	    
	}
	public void aendereFarbe (int farbeNeu)
	{
	farbe = farbeNeu;
	
}

public void zeichne()
	{
	    ZEICHENFENSTER.gibFenster().fuelleKreis(x,y,radius,farbe);
} 