
import java.util.Scanner;
    
    public class Project41{
        
        public static void main (String[] args){
            Scanner reader = new Scanner (System.in);
            int num1, num2, 
            System.out.print ("Enter the first number:");
            num1 = reader.nextInt ();
            System.out.print ("Enter the second number: ");
            num2 = reader.nextInt ();
            int quotient = 0;
            int remainder = 0;
            if (num1 <= 0)
                System.out.println ("Number 1 must be positive");
            else if (num2 <= 0)
                System.out.println ("Number 2 must be positive");
            else 
                if (num1 > num2){
                    quotient = num1 / num2;
                    remainder = num1 % num2;
                }else{
                    quotient = num2 / num1;
                    remainder = num2 % num1;
            System.out.println ("The quotient is " + quotient);
            System.out.println ("The remainder is " + remainder);
        }
    }
}