import java .util.Scanner;
class mbd
{
    System.out.println("enter 3 no");
Scanner sc=new Scanner(System.in)
int x=sc.nextInt();
int y=sc.nextInt();
int z=sc.nextInt();
    public static int max()
    {
        if(x>y)
        {
            if(x>z)
            return x;
            else if(y>z)
            return y;
            else 
            return z;
        }
        else
        {
            if(y>z)
            return y;
            else if(x>z)
            return x;
            else
            return z;
        }
    }
    public static int min()
    {
        if(x<y)
        {
            if(x<z)
            return x;
            else if(y<z)
            return y;
            else 
            return z;
        }
        else
        {
            if(y<z)
            return y;
            else if(x<z)
            return y;
            else
            return z;
        }
    }
    public static int avg()
    {
        int average=(x+y+z)/2;
        return average;
    }
    public static void main(String args[])
  {
       int d=mbd.max();
       System.out.println("Max no is"+d);
       int e=mbd.min();
       System.out.println("Min no is"+e);
       int f=mbd.avg();
       System.out.println("avg is"+f);
    }
}
       