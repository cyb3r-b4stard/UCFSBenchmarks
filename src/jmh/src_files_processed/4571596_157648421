import java.io.*;
class Evectors
{
    static BufferedReader keyboard = new
    BufferedReader (new InputStreamReader(System.in)) ;
    static PrintWriter screen = new PrintWriter( System.out, true);
    public static void main (String [] args ) throws IOException
    {
    
            int[] vec1= new int [4];    
        
for(int n = 0; n < 4; n++) 

{
if (n==0)
screen.println( "What is the Energy of particle 1? ");
}
{
if (n==1)
screen.println( "What is px of particle 1? ");
}
{
if (n==2)
screen.println( "What is py of particle 1? ");
}
{
if (n==3)
screen.println( "What is pz of particle 1? ");
}
        

                
        int E; int px;int py;int pz; 
        E = Integer.parseInt(keyboard.readLine(0));
        px = Integer.parseInt(keyboard.readLine(1));
        py = Integer.parseInt(keyboard.readLine(2));
        pz = Integer.parseInt(keyboard.readLine(3));
        
    }      
        int[] vec;
        vec1= new int[4];
        vec1[0]=E;
        vec1[1]=px;
        vec1[2]=py;
        vec1[3]=pz;
        
        screen.println("The 4-vectors of particle 1 are (" + vec[0] + "," + vec[1] + "," + vec[2] + "," + vec[3] + ")");
        
        
        int E2; int px2;int py2;int pz2; 
        screen.println( "\n\nWhat is the Energy of particle 2? ");
        E2 = Integer.parseInt(keyboard.readLine());
        screen.println( "What is px of particle 2? ");
        px2 = Integer.parseInt(keyboard.readLine());
        screen.println( "What is py of particle 2? ");
        py2 = Integer.parseInt(keyboard.readLine());
        screen.println( "What is pz of particle 2? ");
        pz2 = Integer.parseInt(keyboard.readLine());
        
        int[] vec2;
        vec2= new int[4];
        vec2[0]=E2;
        vec2[1]=px2;
        vec2[2]=py2;
        vec2[3]=pz2;
        
        screen.println("\n\nThe 4-vectors of particle 2 are (" + vec2[0] + "," + vec2[1] + "," + vec2[2] + "," + vec2[3] + ")");        
        
        double Pabs1= Math.sqrt((px*px)+(py*py)+(pz*pz));
        screen.println("\n\nThe absolute momentum of particle 1 is " + Pabs1 + "MeV/c");
        
        double Pabs2= Math.sqrt((px2*px2)+(py2*py2)+(pz2*pz2));
        screen.println("The absolute momentum of particle 2 is " + Pabs2 + "MeV/c");

        double mass1= Math.sqrt((E*E)-(Pabs1*Pabs1));
        double mass2= Math.sqrt((E2*E)-(Pabs2*Pabs2));
        
        screen.println("\n\nThe mass of particle 1 is " + mass1 + "MeV/c^2");
        screen.println("The mass of particle 2 is " + mass2 + "MeV/c^2");
        
        int[] vec3;
        vec3= new int[4];
        vec3[0]= vec[0]+vec2[0];
        vec3[1]= vec[1]+vec2[1];
        vec3[2]= vec[2]+vec2[2];
        vec3[3]= vec[3]+vec2[3];
        
        screen.println("\n\nThe 4-vectors of particle 3 are (" + vec3[0] + "," + vec3[1] + "," + vec3[2] + "," + vec3[3] + ")");
        
        double Pabs3= Math.sqrt((vec3[1]*vec3[1])+(vec3[2]*vec3[2])+(vec3[3]*vec3[3]));
        screen.println("The absolute momentum of particle 3 is " + Pabs3 + "MeV/c");
        
        double mass3= Math.sqrt((vec3[0]*vec3[0])-(Pabs3*Pabs3));
        screen.println("The mass of particle 3 is " + mass3 + "MeV/c^2");
    }
}