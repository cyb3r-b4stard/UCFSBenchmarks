import sum.kern.*;
public class Buntstift extends Kugel 
{
    Buntstift hatBuntstift;
    
    public Buntstift(double pHPosition, double pVPosition, double pAnfangsRichtung, int pRadius, double pSpeed, int pFarbe, Bildschirm pBildschirm)
    {
        hatBuntstift = new Buntstift();
        hatBuntstift.setzeFarbe(pFarbe);
        hatBuntstift.setzeFuellmuster(GEFUELLT);
        super(pHPosition, pVPosition, pAnfangsRichtung, pRadius, pSpeed, pBildschirm);
    }

    public void zeichne()
    {
       hatBuntstift.zeichneKreis(zRadius); 
    }
    
    public void loesche()
    {
        hatBuntstift.radiere();
        this.zeichne();
        hatBuntstift.normal();
    }   
}