









public class Month
{

    /**
     * Contructs a Month
     * @param the month number. Must be 1 to 12. For any other number, the month number is set to 1
     */
    public Month(int theMonthNumber)
    {
        if(theMonthNumber < 1 || theMonthNumber > 12)
        {
            theMonthNumber = 1;
        }
    }

    /**
     * Gets the name of this month
     * @return the name of this month
     */
    public String getMonthName()
    {
        if(theMonthNumber == 1) { return "January"; }
        else if (theMonthNumber == 2) { return "February"; }
        else if (theMonthNumber == 3) { return "March"; }
        else if (theMonthNumber == 4) { return "April"; }
        else if (theMonthNumber == 5) { return "May"; }
        else if (theMonthNumber == 6) { return "June"; }
        else if (theMonthNumber == 7) { return "July"; }
        else if (theMonthNumber == 8) { return "August"; }
        else if (theMonthNumber == 9) { return "September"; }
        else if (theMonthNumber == 10) { return "October"; }
        else if (theMonthNumber == 11) { return "November"; }
        else  { return "December"; }
        
    }

    /**
     * Gets the number of days in this month
     * @return the number of days in this month in a non-leap year
     */
    public int getNumberOfDays()
    {
        if(theMonthNumber = 4 || theMonthNumber == 5 || theMonthNumber == 9 || theMonthNumber == 11)
        { return 30; }
        else if theMonthNumber = 2
        { return 28;}
        else
         return 31;
    }
}