class FORMEN
{
    RECHTECK boden;
    KREIS kreis;
    DREIECK dreieck;
    
    FORMEN()
    {
        rechteck = new RECHTECK;
        kreis = new KREIS;
        dreieck = new DREIECK;
        
        boden.PositionSetzen(100,300);
        boden.GroesseSetzen (150,50);
        boden.FarbeSetzen("rot");
        kreis.MittelpunktSetzen(250,175);
        kreis.RadiusSetzen(50);
        kreis.FarbeSetzen("rot");
        dreieck.PositionSetzen(150,175);
        dreieck.GroesseSetzen(100,50);
        dreieck.FarbeSetzen("rot")
    }
}

    