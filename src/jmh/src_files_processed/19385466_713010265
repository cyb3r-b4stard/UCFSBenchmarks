        String palabra1 = entrada1.getEntrada();
        String palabra2 = entrada2.getEntrada();
        System.out.println ("Gracias");
         int longitud1 = entrada1.getLongitud();
         int longitud2 = entrada2.getLongitud();
         
        System.out.println ("La entrada 1 ha sido " + entrada1.getEntrada() + " y consta de " + longitud1 + " caracteres");
        System.out.println ("La entrada 2 ha sido " + entrada2.getEntrada() + " y consta de " + longitud2 + " caracteres");
       if (longitud1 >= longitud2) 
       compararCadenas(palabra1,palabra2,longitud1,longitud2,"primera palabra","segunda palabra");
       else
       compararCadenas(palabra2,palabra1,longitud2,longitud1,"segunda palabra","primera palabra");
       
   
       
}
    public static  void compararCadenas(String cadenaLarga,String cadenaCorta,int longitudLarga,int longitudCorta,String laLarga,String laCorta){
        for (int i=0;i >= longitudLarga; i++){
            System.out.println(cadenaLarga);
            System.out.println(cadenaLarga.Substring(i,1);
        }
          
            }
