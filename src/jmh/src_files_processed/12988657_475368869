

public class Trieda {

    private int sPocetStudentov;
    private static int aPocetTried = 0;
    private static final int MAX_POCET_STUDENTOV = 20;
    private String aNazovTriedy;
    private Student [] aPoleStudentov;
    private Osoba aTriednyUcitel;
    
    public Trieda(String paNazov, Osoba paUcitel) {
        aPocetTried++;
        aNazovTriedy = paNazov;
        aTriednyUcitel = paUcitel;
        aPocetStudentov = 0;
        aPoleStudentov = newStudent [MAX_POCET_STUDENTOV];
    }
    public static int dajPocetTried(){
        return aPocetTried;
    }
    public boolean pridajStudenta(Student paPridany ) {
        if(PocetStudentov < aPoleStudentov.length){
            aPoleStudentov[aPocetStudentov] = paPridany;
            aPocetStudentov ++;
            return true;
        } else {
            return false;   
        }
    }
    public int dajINdexStudenta (intpaIdHladaneho) {
        int result = -1;
        
        for(int i = 0; 1 < aPocetStudentov; i++) {
            if (aPocetStudentov[i].dajId() == paIdHladaneho) {
                result = 1;
                return result;
            }
        }
        return result;
    }
}