/**
 * ### ###### ############# ########## ######## ###############,
 * ### ####### ## ##### ############# ###########.
 */
public class Ticketautomat 
{

    private int preis;

    private int bisherGezahlt;

    private int gesamtsumme;

    /**
     * Erzeuge eine Maschine, die Tickets zum angegebenen Preis
     * (in Cent) ausgibt.
     */
    public Ticketautomat()
    {
        preis =1000;
        bisherGezahlt = 0;
        gesamtsumme = 0;
    }

    /**
     * Liefere den Preis eines Tickets dieses Automaten (in Cent).
     */
    public int gibPreis()
    { return preis;

    }

    public int gibGesamtsumme()
    {return gesamtsumme;
    }

    public int gibBisherGezahltenBetrag()
    {
        return bisherGezahlt;
    }

    public void geldEinwerfen(int betrag)
    {
        bisherGezahlt += betrag;
    }

    public void ticketDrucken()
    {
        if(bisherGezahlt == preis){
            drucke();
        } else if(bisherGezahlt > preis){
            System.out.println("##################");
            System.out.println("# Zu viel Gezahlt");
            System.out.println("# Rückgeld:" + (bisherGezahlt-preis));
            System.out.println("##################");
            drucke();
        }else {
            System.out.println("##################");
            System.out.println("# Preis: " + preis);
            System.out.println("# Noch zu zahlen:" + (preis-bisherGezahlt));
            System.out.println("##################");
        }
    }

    public void leeren()
    { gesamtsumme = 0; 
    }

    private void drucke(){
        System.out.println("##################");
        System.out.println("# Die BlueJ-Linie");
        System.out.println("# Ticket");
        System.out.println("# " + preis + " Cent.");
        System.out.println("##################");
        System.out.println();

        gesamtsumme += bisherGezahlt;
        bisherGezahlt = 0;
    }

    public void meldung()
    {   System.out.println("##################");
        System.out.println("# Bitte werfen Sie den passenden Betrag ein.");
        System.out.println("##################");
    }

    public void preisAusgeben()
    {   System.out.println("##################");
        System.out.println("# Der Preis des Tickets beträgt " + (preis) + " Cent. ");
        System.out.println("##################");
    }

    public void setzePreis (int neuerPreis)
    {   System.out.println(neuerPreis);
        preis = neuerPreis;
    }
    public void setzeAutomatennummer(int nummer)
    {automaten=(int nummer)
    }

}

