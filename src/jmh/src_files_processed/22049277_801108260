import java.util.Scanner;

public class A014FastFood
{
    private int burgers;
    private int fries;
    private int sodas;
    private int shakes;
    private double change;
    private int amount money;
    /*** Constructor for objects of class A014FastFood */
    public A014FastFood(int b, int f, int sod, int sk, double c)
    {
        burgers = b;
        fries = f;
        sodas = sod;
        shakes = sk;
        change = c;
    }

    /*** returns the sum of the receipt. */
    public double sum()
    {
        double s = burgers*1.49 + fries*0.89 + sodas*0.99 + shakes*1.29;
        return s;
    }
    
    public double taxSum()
    {
        double s = 1.06;
        return s;
    }
    
    public String change(double amt)
    {
        String s = "";
        s += "The change is: " + 1;
        return s;
    }
    
    public String toString()
    {
        String s = "";
        s += "The total before tax is: " + String.format("$%4.2f\n", sum());
        s += "The tax is: " + String.fromat("$%", taxSum());
        s += "The grand total is: " + String.format("$%4.2f\n", sum()) + String.format("$%", taxSum());
        s += "";
        return s;
    }
    
    public static void main(String[] args)  
    {
        Scanner cin = new Scanner(System.in);  
        System.out.print("Enter the number of burgers: ");  
        int burg = cin.nextInt();   
        System.out.print("Enter the number of fries: ");  
        int fri = cin.nextInt();   
        System.out.print("Enter the number of sodas: ");  
        int sod = cin.nextInt();   
        System.out.print("Enter the number of shakes: ");
        int sk = cin.nextInt();
        System.out.print("Enter the amount tendered: ");
        int am = cin.nextInt()
        System.out.println();
        A014FastFood myO = new A014FastFood(burg,fri,sod,sk);  
        System.out.println(myO);  
    }   
}