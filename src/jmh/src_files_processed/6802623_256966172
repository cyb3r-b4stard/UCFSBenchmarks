
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Menu
{
    private Cliente[] clientes = new Cliente[50] ;
    private int quantosClientes = 0 ;
    private Carro[] carros = new Carro[50] ;
    private int quantosCarros = 0 ;

    void mostrarMenuPrincipal()
    {
        Leitor entrada = new Leitor() ;
        System.out.println("0.Sair");
        System.out.println("1.Cadastrar um cliente");
        System.out.println("2.Cadastrar um carro");
        System.out.println("3.Mostrar os nomes dos alunos matriculados");
        System.out.println("4.Mostrar os códigos e nomes das turmas em que um determinado aluno está matriculado");
        int opcao = entrada.leiaInt();

        while(opcao != 0)
        {
            if(opcao == 1)
            {
                System.out.print("informe o cpf do Cliente: ");
                String cpf = entrada.leiaString();
                System.out.print("informe o nome do cliente: ");
                String nome = entrada.leiaString();
                System.out.print("informe o endereço do cliente: ");
                String endereco = entrada.leiaString();
                System.out.print("informe o telefone do cliente: ");
                String telefone = entrada.leiaString();
                Cliente t = new Cliente(cpf,5);
                t.setNome(nome) ;
                t.setEndereco(endereco);
                t.setTelefone(telefone);
                clientes[quantosClientes] = t ;
                quantosClientes++ ;               
            }
            else
            {
                if(opcao == 2)
                {
                    System.out.print("Informe o nome do carro: ");
                    String nome = entrada.leiaString();
                    System.out.print("Informe o modelo do carro: ");
                    String modelo = entrada.leiaString();
                    System.out.print("informe o placa do carro: ");
                    String placa = entrada.leiaString();
                    String disponivel = "1"
                    Carro c = new Carro(placa,10);
                    c.setNome(nome) ;
                    c.setModelo(modelo);
                    c.setPlaca(placa);
                    c.setDisponivel(disponivel);
                    carros[quantosCarros] = c ;
                    quantosCarros++ ;     
                }
            
            }
            
            System.out.println("0.Sair");
            System.out.println("1.Cadastrar um cliente");
            System.out.println("2.Cadastrar um carro");
            System.out.println("3.Mostrar os nomes dos alunos matriculados");
            System.out.println("4.Mostrar os códigos e nomes das turmas em que um determinado aluno está matriculado");

            opcao = entrada.leiaInt();
        }  
        }

    }
