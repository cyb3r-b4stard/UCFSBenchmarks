import java.util.Scanner;

public class IfDemo
{
    public static void main(String [] args)
    {
        Scanner in = new Scanner(System.in);
        
        System.out.print("Guess the name of Mr. Ogrodnik's son: ");
        String sonName = in.next();
        
        String sonName = Noah;
        If (sonName = "Noah")
        {   System.out.println("Your guess was correct!");
        }
        else
        {   System.out.println(":(");
        }
        
        System.out.print("Guess the age of Mr. Ogrodnik's son, to the nearest 1/2 year: ");
        double sonAge = in.hasNextDouble();
        
        Double sonAge = 5;
        If (sonAge = 5)
        {   System.out.println("Your guess was correct!");
        }
        else
        {   System.out.println(":(");
        }
        
        Scanner in2 = new Scanner(System.in);
        
        System.out.print("Guess the name of Mr. Ogrodnik's daughter: ");
        String daughterName = in2.next();
        
        String daughterName = Eloise;
        If (daughterName = "Eloise")
        {   System.out.println("Your guess was correct!");
        }
        else
        {   System.out.println(":(");
        }
        
        System.out.print("Guess the age of Mr. Ogrodnik's daughter, to the nearest 1/2 year: ");
        double daughterAge = in2.nextDouble();
        
        Double daughterAge = 2.5;
        If (daughterAge = 2.5)
        {   System.out.println("Your guess was correct!");
        }
        else
        {   System.out.println(":(");
        }
        
        /*Edit the program so it will use the hasNext() metthod to validate that the
         *user input is a valid data value before storing its value, then return a statement
         *to the user regarding the accuracy of their guess
         */
                 
    }
}