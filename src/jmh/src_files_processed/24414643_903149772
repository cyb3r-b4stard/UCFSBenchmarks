import java.util.*;

public class PorcentajeAprobados {
    public static void main (String[]args) {
        Scanner tec = new Scanner(System.in).useLocale(Locale.US);
        int alumnos = 0;
        do {
            System.out.print("Numero de alumnos: ");
            alumnos = tec.nextInt();
        }while (alumnos <= 0);
        for (int i = 0; i<=alumnos; i++) {
            System.out.println("Nota del alumno: " + i);
            double nota = tec.nextDouble();
        }
        }
    }
}
