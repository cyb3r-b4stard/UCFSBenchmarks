import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.ButtonGroup;
import javax.swing.JRadioButton;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.GridLayout;



public class RectangleShower
{
    public static void main(String[]args)
    {
        JFrame all = new JFrame();
        JPanel control = new JPanel();
        JPanel radio = new JPanel();
        JPanel check = new JPanel();
        JPanel display = new JPanel();
        
        JButton make = new JButton("Make Rectangle");
        
        final JRadioButton norm = new JRadioButton("Normal Rectangle");
        final JRadioButton fat = new JRadioButton("Fat Rectangle");
        final JRadioButton tall = new JRadioButton("Tall Rectangle");
        
        ButtonGroup size = new ButtonGroup();
        size.add(norm);
        size.add(fat);
        size.add(tall);
        
        radio.add(norm);
        radio.add(fat);
        radio.add(tall);
        radio.setLayout(new GridLayout(3,1));
        
        final JCheckBox red = new JCheckBox("Fill Red");
        final JCheckBox green = new JCheckBox("Fill Green");
        final JCheckBox blue = new JCheckBox("Fill Blue");
        
        check.add(red);
        check.add(green);
        check.add(blue);
        check.setLayout(new GridLayout(3,1));
        
        control.add(radio);
        control.add(check);
        control.add(make);
        
        all.add(control);
        all.setVisible(true);
        
        class RadioListener implements ActionListener
        {
            public void actionEvent(ActionEvent event)
            {
                if(tall.isSelected())
                {
                boolean taller = true;
                }
                else if (fat.isSelected())
                {
                boolean fatter = true;
                }
                else 
                {
                boolean normal = true
               }
            }
        }
        
        ActionListener dimListener = new RadioListener();
    
    
    
    
    }
}