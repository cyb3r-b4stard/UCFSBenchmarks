
/**
 * # ##### #### ###### # ####
 * 
 * @###### ########### ####### 
 * @####### #/##/##
 */
public class Door
{
    private String state; 
    private double height; 
    private double width; 
    private String room;
    private String locked; 

    /**
     * Constructor for objects of class Door
     */
    public Door()
    {
        state = "closed";
        height = 1;
        width = 2.5;
        room = "living room";
        locked = "locked";
    }
    
    /**
     * Constructor a door with a given state, height, width, room, and locked status.
     * @param aState open or closed
     * @param aHeight height value in meters
     * @param aWidth width value in meters
     * @param aRoom where door leads
     * @param aLocked locked or unlocked
     */

    public Door(String aState, double aHeight, double aWidth, String aRoom, String aLocked)
    {
        state = aState;
        height = aHeight;
        width = aWidth;
        room = aRoom;
        locked = aLocked;
    }

    /**
     * displays the state of the door
     * 
     * 
     * @return     returns the state of the door
     */
    public String getState()
    {
       return state;
    }
    
    /**
     * displays the height of the door
     * 
     * 
     * @return     returns the height of the door
     */
    public double getHeight()
    {
       return height;
    }
    
    /**
     * displays the width of the door
     * 
     * 
     * @return     returns the width of the door
     */
    public double getWidth()
    {
       return width;
    }
    
    /**
     * displays the room the door leads to
     * 
     * 
     * @return     returns the room the door leads to
     */
    public String getRoom()
    {
       return room;
    }
    
    /**
     * displays the locked state of the door
     * 
     * 
     * @return     returns wiether the door is locked or unlocked
     */
    public String getLocked()
    {
       return locked;
    }
    
    /**
     * This method opens the door
     *
     * 
     * @return state open
     */
    public String Open()
    {
        state = "open"
    }

}