public class Hand{

    public ArrayList<Card> myCards;

    public Hand(){
        myCards = new ArrayList<Card>();
        fillHand();
    }

    public boolean allSameSuit(){    
        int k=0;
        int s = myCards.get(k).suit();
        while (k < myCards.size()-1) {
            if ( s != myCards.get(k).suit()){
                return false;
            }
            k++;
        }
        return true;       
    }

    public void testAllSameSuit()
