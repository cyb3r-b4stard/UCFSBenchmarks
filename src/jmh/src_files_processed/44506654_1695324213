import static java.lang.System.*;
import java.util.Scanner;

public class InputReview
{
    public static void main(String[]args)
    {
        Scanner keyboard = new Scanner(System.in);
        
        out.print("Enter your first name :: ");
        String firstName = keyboard.next();
        out.print("Enter your last name :: ");
        String lastName = keyboard.next();
        
        out.println(lastName + ", " + firstName);
        
        out.print("Enter your teacher's first intial :: ");
        String firstInitial = keyboard.next();
        out.print("Enter your teacher's last initial :: ");
        String lastInitial = keyboard.next();
        
        out.println(firstInitial + "." + lastInitial + ".");
        
        out.print("What is your GPA :: ");
        double gpa = keyboard.nextDouble();
        out.print("What is your grade in school :: ");
        int grade = keyboard.nextInt();
        out.println("Hello " + firstName + " " + last Name);
        out.println("Your GPA is " + gpa + " and you are in grade " + grade);
             
    }
}