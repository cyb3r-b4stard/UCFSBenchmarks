public class PhoneBook
{
    private int personCount = 0, addPersonIndex = 1000;
    Person[] people = new Person[1000];
    public int numPeople()
    {
        for(int i = 0; i < 1000; i++)
        {
            if(people[i] != null)
            {
                personCount++;
            }
        }
        return personCount;
    }
    public void addPerson(String newName, String newPhoneNumber)
    {
        int population = numPeople();
        int tracker = 0;
        if(population == 1000)
            System.out.println("Error. The PhoneBook is full.");
        else
        {
            for(int i = 0; i < 1000; i++)
            {
                if(people[i] != null)
                {
                    if(tracker == 0)
                    {
                        people[i].setNameAndPhone(String newName, String newPhoneNumber);
                        tracker++;
                    }
                }
            }
        }
    }
}