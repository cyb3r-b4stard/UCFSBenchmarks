public class NumberJudge
{
    private int referenceNumber;
    private InputReader reader;
    
    public NumberJudge(int refNumber)
    {
        referenceNumber = refNumber;
        reader = new InputReader();
    }

    public String judge(int number)
    {
        if (number > referenceNumber)
        {
            return "Too Big!";
        }
        else if (number == referenceNumber)
        {
            return "Perfect!";
        }
        else
        {
            return "Too Small!";
        }
    }
    
   public void showJudgement(int number)
    {
        if (number > referenceNumber)
        {
            System.out.println("Too Big!");
        }
        else if (number == referenceNumber)
        {
            System.out.println("Perfect!");
        }
        else if (number < referenceNumber)
        {
            System.out.println("Too Small!");
        }
    }
    
    public boolean isTooSmall(int number)
    {
        if (number < referenceNumber)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    
    public boolean isTooLarge(int number)
    {
        if (number > referenceNumber)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    
    public boolean isPerfect(int number)
    {
        if (number == referenceNumber)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    
    public void judgeInput(number)
    {
        reader.getInt("Please type a number? ");
        showJudgement();
            
    }
}