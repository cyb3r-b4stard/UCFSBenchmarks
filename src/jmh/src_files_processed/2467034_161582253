package INHERITENCE;
super();
public class Sales extends Salesman
{
    public int billno;
    public int qty;
    public double price;
    public double psales;
    public String pname;
    public void readDetails(int b,int q,double p)
    {
        billno = b;
        qty = q;
        price = p;
    }
    public void readDetails(double s,String pr)
    {
        psales = s;
        pname = pr;
    }
    public double calculate()
    {
        double value = 0.0;
        value = (price*qty) + psales;
        return value;
    }
    public void Show()
    {
        super.Show(); 
        System.out.println("NAME OF SALESMAN:" + name);
        System.out.println("ADDRESS OF SALESMAN:" + address);
        System.out.println("PRODUCT NAME:" + pname);
        System.out.println("BILL NO:" + billno);
        System.out.println("QUANTITY:" + qty);
        System.out.println("PRICE:" + price);
        System.out.println("PREVIOUS SALES:" + psales);
        System.out.println("TOTAL PRICE:" + calculate());
    }
}