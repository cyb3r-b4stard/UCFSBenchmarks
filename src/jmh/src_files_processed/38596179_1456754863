
public class GTA6
{
    private int price;
    private int gigabyte;
    private boolean multiplayer;

    public  GTA6 (int price,int gigabyte,boolean multiplayer)
    { this.price=price;
        this.gigabyte=gigabyte;
        this.multiplayer=multiplayer;
    }

    public int setPrice(int price)
    
     {   
         if (price>=10&&price<=50)
            {
                this.price = price;
            }
            else
            {
                System.out.println("Fehler: " + price + " ist ein ungÃ¼ltiger Preis!");
                this.price= 20;
            }
    
}