
/**
 * ##### # ########### ## ##### ######### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Triangulo
{
    private double ladoA;
    private double ladoB;
    private double ladoC;
    private double altura;
    
    public Triangulo ()
    {
     ladoA=0.0;
     ladoB=0.0;
     ladoC=0.0;
     altura=0.0;
    }
    
    public Triangulo (double ladoA,double ladoB,double ladoC , double altura)
    {
     setLadoA(ladoA);
     setLadoB(ladoB);
     setLadoC(ladoC);
     setAltura(altura);
    }
    
    public double getLadoA()
    {
     return ladoA;
    }
    
    public void setLadoA(double ladoA)
    {
    if (ladoA>0)
    {
      this.ladoA=ladoA;
    }
    else 
    {
     System.out.println("ladoA debe ser mayor a 0");
    }
   }
   
   public double getLadoB ()
   {
    return ladoB; 
   }
   
     public void setLadoB(double ladoB)
    {
    if (ladoB>0)
    {
      this.ladoB=ladoB;
    }
    else 
    {
     System.out.println("lado b debe ser mayor a 0");
    }
   }
   
   public double getLadoC()
   {
    return ladoC; 
   }
   
     public void setLadoC(double ladoC)
    {
    if (ladoC>0)
    {
      this.ladoC=ladoC;
    }
    else 
    {
     System.out.println("lado C debe ser mayor a 0");
    }
   }
   
   public double getAltura ()
   {
    return altura; 
   }
   
     public void setAltura(double altura)
    {
    if (altura>0)
    {
      this.altura=altura;
    }
    else 
    {
     System.out.println("la altura debe ser mayor a 0");
    }
   }
   
   public void printTriangulo()
   {
     System.out.println("----datos de triangulo----");
     System.out.println("lado A debe ser mayor a 0"+getLadoA());
     System.out.println("lado b debe ser mayor a 0"+getLadoB());
     System.out.println("lado C debe ser mayor a 0"+getLadoC());
     System.out.println("la altura debe ser mayor a 0"+getAltura());
     System.out.println("el perimetro es:"+perimetro());
     System.out.println("el area es:"+area());
     System.out.println(""+);
   }
   
   public double perimetro()
   {
    return getLadoA()+getLadoB()+getLadoC();
   }
   
   public double area()
   {
    return  getLadoC()*getAltura()/2;
   }
   
   public double getEquilatero()
   {
    if (getLadoA()== getLadoB()== getLadoC())
    {
      System.out.println("es equilatero")
    }
    
   }
}