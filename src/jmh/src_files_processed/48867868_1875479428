       public class ColorDance {
           
           public static void main(String[] args){
               Scanner scan = new Scanner (System.in);
               Finch myFinch = new Finch();
               int red, blue, green;
               String turns ="";
               
               while(myFinch.isBeakUp()== false)
               {
                   System.out.print("Direct: Should I turn left, right, stop go, or back?? ");
                        turns = scan.nextLine();
                        
                        while
                        (!(turns.equalsIgnoreCase("Right")||turns.equalsIgnoreCase("Left")||turns.equalsIgnoreCase("stop")||turns.equalsIgnoreCase("go")||turns.equalsIgnoreCase9"back")))
                                    {
                                        System.out.print("That's not valid! Should I turn left, turn right, stop go or back? ");
                                                turns = scan.next.Line();
                                            }
                                            
                
      myFinch.quit();
