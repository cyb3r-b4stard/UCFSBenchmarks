


public class VariablenundZuweisungsanweisungen
{
    
   long arbeitsstunden = 40 ;
   double stundenlohn = 10,steuersatz = 0.10;

   
    
    {
        system.out.println("Arbeitsstunden"+arbeitsstunden);
        system.out.println("Bruttolohn"+(arbeitsstunden*stundenlohn));
        system.out.println("Steuerbetrag" +(arbeitsstunden*stundenlohn*steuerbetrag));
        ;
    };


