import java.util.Scanner;
public class main
{
    public static void main(String[]args)
    {
        Scanner teclado = new Scanner(System.in);
        int n1,n2,total;
        int opcion =0;
        System.out.println("Ingrese el primer dato: ");
        n1=teclado.nextInt();
        System.out.println("Ingrese el segundo dato: ");
        n2=teclado.nextInt();
        System.out.println("--------Ingrese una opcion---------");
        System.out.println("1.Se sumaran los datos");
        System.out.println("2.Se restan los datos");
        System.out.println("3.Se multiplican los datos");
        System.out.println("4.Se dividen los datos");
        switch(opcion){
            case 1: total=n1+n2;
            break;
            case 2: total=n1-n2;
            break;
            case 3: total=n1*n2;
            break;
            case 4: total=n1/n2;
            break:
            default: System.out.println("Datos mal ingresado");
            break;
        }
    }
}