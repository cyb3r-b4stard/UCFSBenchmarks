    public Aufgabenblatt3()
    {
        x = 0;
    }

    /**
     * Ein Beispiel einer Methode - ersetzen Sie diesen Kommentar mit Ihrem eigenen
     * 
     * @param  y    ein Beispielparameter für eine Methode
     * @return        die Summe aus x und y
     */
    public int beispielMethode(int y)
    {
        return x + y;
    }

    public boolean genauEiner( boolean a,boolean b, boolean c)
    {

        if ( (a  & !b & !c ) || (!a & b & !c)|| (!a  & !b & c ))
        {
            return true;
        }
        else 
        {
            return false;
        }

    }

    public boolean schaltjahr(int schaltjahr)
    {
        if ( schaltjahr > 0)
        {
            if ((schaltjahr % 4) == 0)
            {
                if ((schaltjahr % 100) == 0)
                {
                    if ((schaltjahr % 400) == 0)
                    {
                        return true;
                    }
                    else 
                    {
                        return false;
                    }
                }
                else 
                {
                    return true;
                }

            }
            else
            {
                return false;
            }
        }
        else
        {
            return false;
        }

    }

    public boolean schaltjahr2(int schaltJahr)
    { if(schaltJahr > 0)
        {
            if ( (schaltJahr %4 == 0 && schaltJahr % 100 != 0) | (schaltJahr %400 == 0))
            {
                return true;
            }

            else 
            {return false;}
        }
        else
        {return false; }
    }

    public static boolean groesser( int m, int n ) {
        if ( m > n ) {
            return true;
        }
        else {
            return false;
        }
    }

    public static boolean groesser2(int m, int n)
    {
        return m>n ? true: false;
    }

    public static boolean groesser3( int m, int n ) {
        return m > n;  

    }

    public static int maximun( int m, int n ) {
        return m>n ? m:n;
    }

    public static double euro2dollar(double euro)
    {
        double dollar = euro * 1.07915;
        dollar = Math.round(dollar *100)/100.00;
        return  dollar;
    }

    public void tabbelle()
    {
        System.out.println("Umrechnungstabelle");
        System.out.println("------------------");
        System.out.println("Euro \t USD");
        for(int i=10;i <=100; i+=10)
        { if  (i < 100)
            {
                double dollar = i * 1.07915;

                dollar = Math.round(dollar *100)/100.00;
                System.out.println(" "+ i + ".00" + "\t" + " " + dollar);
            }
            else 
            {
                double dollar = i * 1.07915;

                dollar = Math.round(dollar *100)/100.00;
                System.out.println(i + ".00" + "\t" + dollar);
            }
        }
    }

    public static double minimum(double[] array)
    {
        double x = 0;
        if(array[0] < array[1] & array[0] < array[2] & array[0] < array[3])
        {
            x = array[0];
        }
        else if(array[1] < array[0] & array[1] < array[2] & array[1] < array[3])
        {
            x = array[1];
        }
        else if(array[2] < array[0] & array[2] < array[1] &array[2] < array[3])
        {
            x = array[0];
        }
        else if(array[3] < array[0] & array[3] < array[1] &array[3] < array[2])
        {
            x = array[3];
        }
        return x;
    }

