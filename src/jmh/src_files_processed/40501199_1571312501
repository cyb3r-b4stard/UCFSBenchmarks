    public static void regenstatistik(int[] a)
    { 
        int summe=0;
        double prozentwert =0;

        for(int i = 0; i < a.length; i++)
        {
            if(a[i] < 0)
            {
                System.out.println("geht net");
                return;
            }
        }

        for(int i= 0;i < a.length;i++)
        {
            summe += a[i];
        }

        for(int i= 0; i < a.length;i++)
        {
            System.out.print("Monat" +(i+1) + "\t"  );
            prozentwert = ((double)a[i] / (int)summe) *100;
            for(int y=0; y < prozentwert; y++)
            {
                System.out.print("=");
            }
            System.out.print(" " +a[i]);
            System.out.println();
        }

    }

    public static double mittelwert(double a, double b, double c)
    {
        double x = (a+b+c) /3;
        return x;
    }

    public static double median(double a, double b, double c)
    {
        if(a> b & a<c)
        {
            return a;
        }
        else if (b> a & b <c)
        {
            return b;
        }
        else
        {
            return c;
        }

    }

    public static void sekunden(int se)
    {
        int st = 0,m = 0;
        if(se<0)
        {
            System.out.println("Sie haben eine negative Eingabe geträtigt");
            return;
        }
        else
        {
            if (se<60)
            {

            }
            if(se >=60 & se <3600)
            {
                m=se/60;
                se = se% 60;

            }
            if(se >=3600)
            {
                st = se / 3600;
                se= se - st *3600;
                m = se/60;
                se = se % 60;
            }

            System.out.print(st + " :" + m + ":" + se);
        }
    }

    static int j = (int)(Math.random()*1000);
    static int counter = 0;
    public static void rate(int z)
    {

        while(z != j)
        {
            if(z<j)
            {
                counter++;
                int differenz = j-z;
                System.out.println("Leider falsch, die Zahl ist größer " + counter + ". Versuche");  
                System.out.print("Neuer Versuch");
                Scanner scan = new Scanner(System.in);
                z = scan.nextInt();

            }

            else if (z>j)
            {
                counter++;
                int differenz = z-j;
                System.out.println("Leider falsch, die Zahl ist kleiner " + counter + ". Versuch");  
                System.out.print("Neuer Versuch");
                Scanner scan = new Scanner(System.in);
                z = scan.nextInt();

            }
        }

        if(z == j)
        {
            System.out.println("Glueckwunsch, Sie haben nur " + counter + " Versuche gebraucht");

        }

    }
    
    public static int zahlentheorie(int eingabe)
    {
        counter =0;
        while (eingabe != 1)        
        {
            if(eingabe % 2 == 0)
            {   
                counter++;
                eingabe = eingabe/2;
            }
            else
            { counter++;
                eingabe = eingabe*3 +1;
            }
           
        }
        System.out.print("Schritte: " +counter)
         return eingabe;
    }
}
