
import java.util.*;

    public class NutsAndBolts
    {
        public static void main(String[] args)
        {
            Scanner console = new Scanner(System.in);
            System.out.println(" Enter a positive value ");
            int apples = console.nextInt();
            console.nextLine();
            if (apples >= 0)
             {
                System.out.println("Hello world");
             }
             System.out.println("Enter a number (positive)");
            apples = console.nextInt();
            console.nextLine();
            if ((apples % 2) == 0) 
             {
                System.out.println("Its even");
             }
            else if ((aples / 5) == 0)
             {
                System.out.println("How odd!");
             }
            int votingAge = 18;
            System.out.print("Input an integer value >>> ");
            int actualAge = console.nextInt();
            console.nextLine();

            System.out.println("Add an angle measure (All three should equal 180)");
            int angle1 = console.nextInt();
            console.nextLine();
            System.out.println("Angle measure - - -");
            int angle2 = console.nextInt()
            console.nextLine();
            System.out.println("Angle measure - - -");
            int angle3 = console.nextInt()
            console.nextLine();
            if (angle1 == angle2 && angle2 == angle2 == angle3 && angle1 == angle3)
            {
                System.out.println("Equilateral triangle!");
            }
            
            if (angle1 != angle2 && angle2 != angle3 && angle1 != angle3)
            {
                System.out.println("Scalene triangle!");
            }
            
            if (angle1 == angle2 && angle1 != angle3)
            {
                System.out.println("Iscoceles");
            }
            
            if (angle1 + angle2 + angle3 > 180)
            {
                System.out.println("Error");
            }
            System.out.println("A plant");
            
        }
    }