/**
 * #### ###### ### ########## ### ######## ###### ###########.
 * ####### #### ##########, ## ##### ##### ######## ############
 * ###### ## ######.
 * ## ###### ####### ####### ### ############ ### #.
 * 
 * @###### ##### #########.
 * @####### ####.##.##
 */
public class Notizbuch {
    private List<String> notizen;

    /**
     * Führe die Initialisierungen durch, die für ein Notizbuch
     * notwendig sind.
     */
    public Notizbuch() {
        notizen = new List();
    }

    /**
     * Speichere eine neue Notiz in diesem Notizbuch.
     * @param notiz die zu speichernde Notiz.
     */
    public void speichereNotiz(String notiz) {
        notizen.append(notiz);
    }

    /**
     * @return die Anzahl der Notizen in diesem Notizbuch.
     */
    public int anzahlNotizen() {
        int anzahl = 0;
        notizen.toFirst();
        while (notizen.hasAccess()) {
            anzahl = anzahl + 1;
            notizen.next();
        }
        return anzahl;
    }

    /**
     * Zeige eine Notiz.
     * @param notiznummer die Nummer der Notiz, die gezeigt werden soll.
     */
    public void zeigeNotiz(int notiznummer) {
        if((0 <= notiznummer) && (notiznummer < anzahlNotizen())) {
            notizen.toFirst();
            for (int akt = 0; akt < notiznummer; akt = akt + 1) {
                notizen.next();
            }
            System.out.println(notizen.getContent());
        }
    }
    
    public void entferneNotiz(int notiznummer) {
        if((0 <= notiznummer) && (notiznummer < anzahlNotizen())) {
                notizen.toFirst();
                for (int akt = 0; akt < notiznummer; akt = akt + 1) {
                    notizen.next();
                }
                notizen.remove();
            } 
    }
    
    public void alleNotizenAusgeben() {
        int randomNumber = 0;
        while (randomNumber < anzahlNotizen()) {
            notizen.toFirst();
            for (int akt = 0; akt < notiznummer; akt = akt + 1) {
                notizen.next();
            }
            System.out.println(notizen.getContent());
            randomNumber++;
        }
    }
}
}