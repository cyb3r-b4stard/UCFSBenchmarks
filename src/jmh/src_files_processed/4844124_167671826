import java.util.*;
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Kniha
{
    private String aNazov;
    private int aCena;
    private int aRok;
    private int aPocetNaSklade;
    private Zaner aZaner;
    private ArrayList<Autor> aAutori;
    private Kniha aKniha;
      
    public Kniha(String paNazov, int paCena, int paRok, int paPocetNaSklade, Zaner paZaner)
    {
       aNazov = paNazov;
       aCena = paCena;
       aRok = paRok;
       aPocetNaSklade = paPocetNaSklade;
       aZaner = paZaner;
       
       aAutori = new ArrayList<Autor>();
    }

    public String getNazov()
    {
        return aNazov;
    }
    
    public int getCena()
    {
        return aCena;
    }
    
    public int getRok()
    {
        return aRok;
    }
    
    public int getPocetNaSklade()
    {
        return aPocetNaSklade;
    }
    
    public Zaner getZaner()
    {
        return aZaner;
    }
    
    public void printAutorov()
    {
        for(Autor aAutor:aAutori){System.out.println(aAutor);}
    }
    
    public void addAutor(Autor paAutor)
    {
        aAutori.add(paAutor);
    }
    
    public Kniha nacitajKnihu()
    {
      Scanner vstup = new Scanner(System.in);
      String paNazov; 
      int paCena;
      int paRok;
      int paPocetNaSklade;
      Zaner paZaner = Zaner.beletria;
      String paZanerS  ;
      ArrayList<Autor> paAutori = new ArrayList<Autor>();
      
      System.out.println("Zadaj nazov knihy:");
      paNazov = vstup.nextLine();
      System.out.println("Zadaj cenu knuihy:");
      paCena = vstup.nextInt();
      System.out.println("Zadaj rok knihy:");
      paRok = vstup.nextInt();
      System.out.println("Zadaj pocet kusov na sklade:");
      paPocetNaSklade = vstup.nextInt();
      System.out.println("Zadaj zaner knihy");
      paZanerS = vstup.nextLine();
      
      if(paZanerS == "beletria"){paZaner = Zaner.beletria;};
      ||if(paZanerS == "dobrodruzne"){paZaner =  Zaner.dobrodruzne;};
      ||if(paZanerS == "poezia"){paZaner =  Zaner.poezia;};
      ||if(paZanerS == "biografia"){paZaner =  Zaner.biografia;};
      ||if(paZanerS == "odborna"){paZaner =  Zaner.odborna;};
      ||if(paZanerS == "komix"){paZaner =  Zaner.komix;};
      ||if (paZanerS != "beletria" && paZanerS != "dobrodruzne" && paZanerS != "poezia" && paZanerS != "biografia" && paZanerS != "odborna" && paZanerS != "komix" ){paZaner =  null;}; 
     
      
      aKniha = new Kniha (paNazov, paCena, paRok, paPocetNaSklade, paZaner) ;
      return aKniha;
    }
    
    public void predajKnihu()
    {
        aPocetNaSklade = aPocetNaSklade - 1;
    }
    
    public String toString()
    {
        String paAutori = "";
        for(Autor aAutor: aAutori){paAutori = aAutor.getMeno();};
        return "Kniha " + aKniha.getNazov() + ", " + paAutori + ", " + aKniha.getCena() + "eur  - " + aKniha.getPocetNaSklade();
    }
    
}