public class Player
{
    private String name;
    private int numFriends;
    private String university;
    private int [][] scores;
    
    public Player(String myName, int myScores[] [])
    {
        name = myName;
        numFriends = 5;        
        scores = myScores;
    } 
    
    public void setUniversity(String uni)
    {
        university = uni;
    }
    
    public void displayUniversity()
    {
        System.out.println(university);
    }
    
    public String getName()
    {
        return name;
    }    
    
    void displayPopularity()
    {
    }
    
    public int getWeightedScore(int gameNumber)
    {
        {
      int row, col, numRows=scores.length, numCols= scores[0].length;
      boolean found = false;

      for(row=0;row<numRows && !found; row++)
      {
          for(col=0;col<numCols && !found;col++)
          {
              if(scores[row][col] == gameNumber)
              { 
                System.out.println("Found dscores for game" + gameNumber);
                found = true;
              }
          }
      }
              
    }
}

  