import java.util.Scanner;
public class DiceGame
{
    private int playerOne;
    private int playerTwo; 
    private double bet, oneCash, twoCash; 
    
    public static final int INITIAL_BUDGET = 100; 

    public DiceGame()
    {
        playerOne = 0;
        playerTwo = 0; 
        oneCash = INITIAL_BUDGET;
        twoCash = INITIAL_BUDGET; 
        bet = 0; 
    }

    public void play()
    {
        int counter = 0, int resultOne = 0, resultTwo = 0; 
        Dice die = new Dice(); 
        
        while (counter != -1) {
            counter++; 
            
            System.out.println("Turn " + counter + "\n"); 
            
            resultOne = die.roll() + die.roll(); 
            System.out.println("Player rolled " + resultOne ".\n"); 
            
            resultTwo = die.roll() + die.roll(); 
            System.out.println("Player rolled " + resultTwo ".\n"); 
        }
    }
    public static void main(String args[])
    {
         DiceGame game = new DiceGame(); 
         
         play(); 
    }
}