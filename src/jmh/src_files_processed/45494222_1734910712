
/**
 * ##### # ########### ## ##### ############# ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class DisplayDigits
{
   public static void main(String[] args) {
       int number;
       number = 123;
       while (number > 0) {
           int digit = number % 10;
           System.out.print("\t"+digit);
           number = number / 10;
           System.out.println("\t"+number);
    }
}