public class ARBEIT
{

    WELT roboterWelt;
    ROBOTER karol;


    public ARBEIT()
    {
        roboterWelt = new WELT("Rahmen.kdw");
        karol = new ROBOTER(roboterWelt);        
    }

 
    public void Ausfuehren()
    {

        /* ========== HIER geben Sie dem Roboter Befehle: */
        karol.MarkeSetzen();
        while(!karol.IstWand())
        {
            karol.Hinlegen();
            karol.Schritt();
            while(karol.IstWand())
            {
                karol.LinksDrehen();
                
        }
        while (karol.IstMarke())
        {
            karol.TonErzeugen();
        }
        
    
