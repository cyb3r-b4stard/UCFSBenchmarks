
public class pruebaString{
    private String palabra="WorkinGastrs";
    private String palabra2= " House";
    private char letra = 'L';
    public int num;
    
    public void pasarMayuscula(){
        System.out.println ("Palabra original="+palabra);
        palabra = palabra.toUpperCase();
        System.out.println("Palabra convertida a UpperCase=" +palabra);
        
    }
    
    public void pasarMinuscula(){
        System.out.println("Palabra original=" + palabra);
        palabra= palabra.toLowerCase();
        System.out.println("Palabra convertida LowerCase=" + palabra);
    }
    
    public void largoPalabra(){
     num = palabra.length();
     System.out.println("El Largo de la palabra "+palabra +"es " +num);
     if (num > 10 )
     {System.out.println ("La palabra es mayor a 10 caracteres.");
        }
     
     
    }
    
    public void concatenar(){
        palabra = palabra.concat(palabra2);
        System.out.println(" La nueva palabra es= " + palabra);
        
    }
    
    public void trim(){
        palabra = palabra.trim();
        System.out.println("Palabra Sin espacios por trim=" +palabra);
    }
    
    public void charAt(){
      letra = palabra.charAt(6);
      System.out.println("Caracter Retornado" +letra);
      
        
    }
    
    public void subString(){
        palabra = palabra.substring(0,12);
        System.out.println("Substring retornado: "+palabra)
        
    }
    
    
    
    
    
    
    
    
    
    
    
    
    
}