
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
class Book
{
    private String author;
    private String title;
    private int page;
    private String refNumber;
    private int borrow;
    private boolean courseText;

    /**
     * Constructor for objects of class Book
     */
    public Book(String bookAuthor, String bookTitle, int bookPage, boolean bookCourseText)
    {
        author = bookAuthor;
        title = bookTitle;
        page = bookPage;
        refNumber = "";
        courseText = bookCourseText;
    }

    public String getAuthor()
    {
        return author;
    }
    
    public String getTitle()
    {
        return title;
    }
    
    public int getPage()
    {
        return page;
    }
    
    public boolean getCourseText()
    {
        return courseText;;
    }}
   
    public String getRefNumber()
    {
        return refNumber;
    }
    
    public int getBorrow()
    {
        return borrow;
    }
    
    public void setAuthor(String newAuthor)
    {
        author=newAuthor;
    }
    
    public void setTitle(String newTitle)
    {
        title=newTitle;
    }
    
    public void setRefNumber(String newRefNumber)
    {
        if(refNumber.length()>3){
            refNumber=newRefNumber;
        }else{
            System.out.println("Error. Please enter a reference number at least three characters.");
        }
    }
    
    public void setBorrow(int newBorrow)
    {
        borrow++;
        System.out.print("This book is borrowed "+borrow+" time(s).");
    }
    
    /*public void setCourseText(boolean newCourseText)
    {
        if(courseText==true){
            System.out.println("This book is used as a textbook.");
        }
        else if(courseText==false){
            System.out.println("This book is NOT used as a textbook.");
        }else{
            System.out.println("Enter true or false.");
        }
    }
    */
    
    public void printAuthor()
    {
        System.out.print(author);
    }
    
    public void printTitle()
    {
        System.out.print(title);
    }
    
    public void printDetails()
    {
        System.out.println("The title of this book is: "+title);
        System.out.println("The author of this book is: "+author);
        System.out.println("The page is: "+page);
        
        
        if(refNumber.length()==0){
            System.out.println("The reference number is: zzz");
        }
        else{
            System.out.println("The reference number is: "+refNumber);
        }
        
    }
    
    
}