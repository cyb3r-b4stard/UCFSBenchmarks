public class Tablica
{
    int liczbaelementów;
    int tablica[];
    public Tablica(int l){
       this.liczbaelementów=l;
       tablica = new int[l]; 
    }
    public Tablica(int l, int min, int max){
        this.liczbaelementów=l;
        tablica = new int[l];
        
        for(int i=0; i<l; i++){
            double z = max - Math.random()*(max-min);
            tablica[i]=(int)z;}
    }
    public void wyswietl(){
        for(int i=0; i<liczbaelementów; i++)
        System.out.println("tab[" +i+ "]=" +tablica[i]);
    }
    public void suma(){
        int suma=0;
        for(int i=0; i<liczbaelementów; i++)
        suma+=tablica[i];
        System.out.println("Suma wszystkich elementów tablicy to " +suma);
    }
    public void znajdzMaks(){
        int max = tablica[0];
        int indeks=1;
        for(int i=0; i<tablica.length; i++)
        {
           if(tablica[i]>max){
               max=tablica[i];
               indeks=i+1; 
          }}
          System.out.println("Wartość maksymalna = " + max + ", indeks = " + (indeks-1));
        }
        
    
    public void czyWystępuje(int szukana, int zakres){   
            if(zakres<=liczbaelementów){
                for(int i=0; i<tablica.length; i++){
                    if(szukana==tablica[i]){
                        System.out.println("Szukana wartość występuje w tablicy na pozycji " + i + ".");}
                    
                else if(szukana!=tablica[i]){
                        System.out.println("Szukana wartość nie występuje w tablicy");
                }
            }

           
           else{
            System.out.println("Podany zakres jest większy niż rozmiar tablicy.");}
           }
           }
        }
   