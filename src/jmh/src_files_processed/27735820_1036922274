package ProblemaExamen;
import java.util.*;
import javax.swing.AbstractListModel;

public class Firma extends AbstractListModel
{
    List<Angajat> listaAngajati = new ArrayList<>();
    List<Date> listaDataAngajarii = new ArrayList<>();
    public Firma(Angajat a)
    {
       
    }
    public void adaugaAngajat(Angajat a){
        listaAngajati.add(a);
    }
    public void eliminaAngajat(Angajat a){
        listaAngajati.remove(a);
    }
    public void modificaDate(Angajat a,String nume, String prenume){
       int index = listaAngajati.indexOf(a);
       Angajat angajat = listaAngajati.get(index);
       angajat.setNume(nume);
       angajat.setPrenume(prenume);
    }
    public void modificaDataAngajarii(Angajat a, Date d) throws AngajatInexistentException{
        int index = listaDataAngajarii.indexOf(a);
        if(index != -1){
            listaDataAngajarii.set(index,d);
        }
        else{
            throw new AngajatInexistentException();
        }
    }
    public void getElementAt(a){
        
    }
}