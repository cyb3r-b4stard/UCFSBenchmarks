    {
        double gal = 899;
        
        double annual = gal * 365;
        double CO2Pounds = CO2FootprintV1.convertTonsToPounds(double tons);
        double CO2Tons = CO2FootprintV1.calcTons();
        
        System.out.println("CO2 Emissions");
        System.out.println("Gallons     Pounds      Tons");
        System.out.println("Of Gas     from Gas    from Gas");
