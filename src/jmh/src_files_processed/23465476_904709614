/**
 * ##### ##### ### #.## ####### ("########")
 * ########## ######### ### ######## ##########
 * 
 * #### ######
 * ##/##/##
 */

public class Fraction 
{
   private int numer, denom;
   
   public Fraction()
   {
      this(0, 1);   
   }

   public Fraction(int n, int d)
   {
      numer = n;
      denom = d;
   }

   public int getNumerator()
   {
      return numer;
   }

   public int getDenominator()
   {
      return denom;
   }

   public String toString()
   {
      String str;
      str = getNumerator() + "/" + getDenominator();
      return str;
   }
   
   public Fraction multiply(Fraction other)
   {

      int newNumer = numer * other.getNumerator();
      int newDenom = denom * other.getDenominator();
      return new Fraction(newNumer, newDenom).simplify();
   }

   public Fraction divide(Fraction other)
   {

      int newNumer = numer * other.denom;
      int newDenom = denom * other.numer;
      return new Fraction(newNumer, newDenom).simplify();
   } 
   
   public Fraction add(Fraction other)
   {
      
      int newNumer = numer * other.denom + other.numer * denom;
      int newDenom = denom * other.denom;
      return new Fraction(newNumer, newDenom).simplify();
   }

   public Fraction subtract(Fraction other)
   {

      int newNumer = numer * other.denom - other.numer * denom;
      int newDenom = denom * other.denom;
      return new Fraction(newNumer, newDenom).simplify();
   }
   public Fraction simplify()
   {
       int a = new.getNumer();
       int b = new.getDenom();
       if(a > b)
        {
            big = a;
            small = b;
        }
        else
        {
            small = a;
            big = b;
        }
       while(small > 0)
        {
            remainder = big % small;
            big = small;
            small = remainder;
        }
       return new Fraction(a, b);
   }
}