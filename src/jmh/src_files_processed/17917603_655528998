/**
 * ####### #### 
 * ### ##
 */

public class Rational{
    private int num;
    private int den;

    public Rational(){
        num = 0;
        den = 1;
    }
    
    public Rational(int x, int y){
        num = x;
        den = y;
    }
    
    public static void printRational(Rational r){
        System.out.println(r.num + "/" + r.den);
    }
    
    public static void negate(Rational r){
        r.num = -r.num;
        r.den = -r.den;
    }
    
    public static void invert(Rational r){
        int x = r.num;
        r.num = r.den;
        r.den = x;
    }
    
    public static void toDouble(Rational r){
        double r.num = double(r.num);
    }
    
    public static void main(String args[]){
        Rational a = new Rational(2,3);
        Rational.printRational(a);
        Rational.negate(a);
        Rational.printRational(a);
        Rational.invert(a);
        Rational.printRational(a);
    }
}