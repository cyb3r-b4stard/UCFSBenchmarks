
import de.htw.saarland.stl.Stdin;
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public  class Buch extends Artikel
{
    private String titelBuch;
    private String autor;
    private String verlag;

    public void Buch (int nummer, String bezeichnung, double preis) 
    {
        super(nummer, bezeichnung, preis);
        String titelBuch;
        String autor;
        String verlag;

    }

    
    
    public void eingeben()
    {

        titelBuch = Stdin.readlnString ("Titel :");
        autor     = Stdin.readlnString ("autor :");
        autor     = autor.toUpperCase(); 
        verlag    = Stdin.readlnString ("verlag :");

    }
    
    
    public String toString () {
        return String.format ("{0}, {1}, {2}", super.toString(), titelBuch, autor, verlag);
    }
    
    private String getBeschreibung()
    {
        return (titelBuch + autor + verlag);
    }

    public void bucheZugang (int menge)
    {
        super.bucheZugang(); 
    }

    public void buchebgang (int menge) {
        super.bucheAbgang();
    }


    public void setTitelBuch(String titelBuch)
    {
        assert(titelBuch != null) : "Titel ist leer";
        this.titelBuch = titelBuch;

    }

    public void setAutorBuch(String autor)
    {
        this.autor = autor;

    }

    public void setVerlag(String verlag)
    {
        this.verlag = verlag;
    }

    public String getTitelBuch()
    {

        return titelBuch;

    }

    public String getAutorBuch()
    {
         
        return autor;
    }

    public String getVerlag()
    {
        return verlag;
    }  
}