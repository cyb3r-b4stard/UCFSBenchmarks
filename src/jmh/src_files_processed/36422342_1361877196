public class BalanceDoubler
{
    public static void main([] args)
    {
        int year = 0;
        float balance = 10000;
        float interestRate = 0.05;
        
        while (balance < 20000)
        {
            year = year + 1;
            balance = balance * (1 + interestRate);
        }
        System.out.print(year);
    }
}
            
        