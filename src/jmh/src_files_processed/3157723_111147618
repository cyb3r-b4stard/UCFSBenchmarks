
/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Fahrzeug
{
   private  Rechteck k1;
   private  Kreis r1;
   private  Kreis r2;
   int x=40;
   private Rechteck k2;
   private Dreieck d1;
   private Rechteck r3;
   
   
   public void zeichne()
   {
       d1=new Dreieck ();
       d1.vertikalBewegen(170);
       d1.horizontalBewegen(110);
       d1.groesseAendern(30,30);
       d1.farbeAendern("rot");
       d1.sichtbarMachen();
                    
       k1 = new Rechteck();
       k1.vertikalBewegen(100);
       k1.masseAendern(50,100);
       k1.farbeAendern("rot");
       k1.sichtbarMachen();
       
       k2 = new Rechteck();
       k2.vertikalBewegen(150);
       k2.horizontalBewegen(50);
       k2.masseAendern(200,50);
       k2.farbeAendern("rot");
       k2.sichtbarMachen();
       
       r1=new Kreis();
       r1.vertikalBewegen(175);
       r1.horizontalBewegen(50);
       r1.groesseAendern(50);
       r1.sichtbarMachen();
       r1.farbeAendern("schwarz");
       r1.sichtbarMachen();
       
       r2=new Kreis();
       r2.vertikalBewegen(175);
       r2.horizontalBewegen(175);
       r2.groesseAendern(50);
       r2.sichtbarMachen();
       r2.farbeAendern("schwarz");
    }
   public void fahre(int Schnelligkeit)
   {
       while(x<600)
        {
            r1.horizontalBewegen(Schnelligkeit);
            r2.horizontalBewegen(Schnelligkeit);
            k1.horizontalBewegen(Schnelligkeit);
            k2.horizontalBewegen(Schnelligkeit);
            d1.horizontalBewegen(Schnelligkeit);
        }
    }
   public void ampelschaltung ()
   {
       r3= new Rechteck();
       r3.vertikalBewegen(400);
       r3.masseAendern(100,20);
       r3.farbeAendern("rot");
       r3.sichtbarMachen();
       
    
      
           
   
	