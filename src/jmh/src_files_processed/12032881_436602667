import java.util.Scanner;

public class Test{
    static Scanner in = new Scanner(System.in);
    
   public static void main(){
       int num, sum, sum2, avg, count;
    String str;
    num = 0;
    sum = 0;
    avg = 0;
    sum2 = 0;
    str = "Banana";
    System.out.println("Welcome to Michael Bosik's Code.");
    System.out.println();
    System.out.println("This program will make a string of numbers that you enter and will tell you");
    System.out.println("the factors of each number, if there are any, and will print the sum and"); 
    System.out.println("average of the numbers at the end");
    System.out.println();
    System.out.println("How to use:");
    System.out.println("Enter any positive or negative whole number to add to the string.");
    System.out.println("NOTE: Please only use whole numbers as opposed to decimals.");
    System.out.println("When you are done, just simply enter 'End' instead of a number.");
    System.out.println();
    do{ 
      System.out.println("Enter a positive or negative whole number. Enter 'End' to end.");
    str = in.next();
    num = in.nextInt();
    sum = sum+num;
    if (sum2!=sum && num!=0){
        count = count+1;
    }
    else if (sum2==sum && num==0){
        count = count+1;
    }
    
    sum2 = sum;
    if (str!.equalsIgnoreCase("End")&& str!.equalsIgnoreCase("Banana")){
        System.out.println("I'm sorry that is not a valid input.");
        str = "Banana";
    }
}while(str.equals("Banana"));
    if (str.equalsIgnoreCase("End")){
        avg = sum/count;
        System.out.println("The final sum is: " + sum);
        System.out.println("The final average is: " + avg);
    }

    
    }}
   
