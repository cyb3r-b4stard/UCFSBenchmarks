
public class LetterInventory
{
    private String s;
    private int[] charCount = new int[26];
    private char[] stringChars;;
    public LetterInventory(String input)
    {
        this.s = input.toLowerCase();
        this.stringChars = new char[input.length()];
        this.charCount = charCount;
        for (int i=0;i<this.s.length();i++)
        {
            int value1 = Integer.valueOf(stringChars[i])-97;
            if (value1>=0)
            {
                charCount[value1]+=1;
            }
        }
    }
    
    public int[] get(char letter){return charCount];}
}