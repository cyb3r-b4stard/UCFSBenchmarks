



import objectdraw.*;
import java.awt.*;

public class B5JordanRedToBlue extends WindowController
{
    private FilledRect derek;
    
    public static void main (String[]args)
    {
        new B5JordanRedToBlue().startController(400,400);
    }
    
    public void begin()
    {
        derek = new FilledRect(70,60,80,80,canvas);
        new FramedRect(69,59,81,81,canvas);
        derek.setColor(new Color(255,0,0));
    }
    
    public void onMouseClick(Location point)
    {
        derek.setColor(new Color(0,0,255));
    }
    
    public void onMouseExit(Location point)
    {
        derek.removeFromCanvas()
    }
    }