import javax.swing.*;

/**
 * ### ######## ##### ##########
 * 
 * @###### ###### ##### 
 * @####### #.##
 */
public class standardM
{
    public standardM()
    {
        
    }
    /**
     * @param a, b
     * @return summe
     */
    public double getSumme(double a,double b)
    {
        double summe;
        summe = a + b;
        return summe;
    }
    /**
     * @param a, b
     * @return produkt
     */
    public double getProdukt(double a,double b)
    {
        double produkt;
        produkt = a * b;
        return produkt;
    }
    /**
     * @param a, b
     * @return differenz
     */
    public double getDifferenz(double a,double b)
    {
        double differenz;
        differenz = a - b;
        return differenz;
    }
    /**
     * @param a, b
     * @return quotient
     */
    public double getQuotient(double a,double b)
    {
        double quotient;
        quotient = a / b;
        return quotient;
    }
    /**
     * @param exp, a
     * @return wurzel
     */
    public double getWurzel(double w,double a)
    {
        double wurzel = 0;
        if(a >= 0)
        {
            wurzel = Math.pow(a,1/w);
        }
        else
        {
            System.out.println("Fehler beim Wurzel ziehen.(Negativ)");
        }
        return wurzel;
    }
    
    /**
     * @param w, a
     * @return potenzwert
     */
    public double getPotenzwert(double w,double a)
    {
        double potenzwert;
        potenzwert = Math.pow(a,w);
        return potenzwert;
    }
    
    /**
     * @param a
     * @return 
     */
    public double getSinus(double a)
    {
        double sinus;
        sinus = Math.sin(a);
        return sinus
    }
}