
class Book
{
    private String author;
    private String title;
    private int pages;
    private String refNumber;
    private int borrowed;
    /**
     * Set the author and title fields when this object
     * is constructed.
     */
    public Book(String bookAuthor, String bookTitle,int nroPaginas)
    {
        author = bookAuthor;
        title = bookTitle;
        pages = nroPaginas;
        refNumber = ("");
        borrowed = 
    }
    public String getAuthor ()
    {
        return author;
    }
    public String getTitle ()
    {
        return title;
    }
    public int getPages ()
    {
        return pages;
    }
    public void setRefNumber (String ref)
    {
         ref= refNumber;
    }
    public String getRefNumber ()
    {
        return refNumber;
    }
    public void printDetails ()
    {
        System.out.println ("Titulo:"+title+", Autor:"+author+", Nro Paginas:"+pages);
    }
    public void borrow ()
    {
        borrowed = borrowed + 1 ;
    }
    public int getBorrowed ()
    {
        return borrowed;
    }
