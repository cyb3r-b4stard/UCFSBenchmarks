import java.util.*;
public class menu
{
    private LinkedList<Team> teams = new LinkedList<Team>();
    private LinkedList<Buyer> buyers = new LinkedList<Buyer>():
    public menu()
    {
        showMenu();
        menu();
    }
    
    public void showMenu()
    {
        System.out.println("t: New Team");
        System.out.println("n: New Buyer");
        System.out.println("b: Buy");
        System.out.println("s: Show Odds");
        System.out.println("x: Exit");
    }
    
    public char readRespond()
    {
        return In.nextChar();
    }
  
    public void menu()
    {
        char response;
        do
        {
            response = readRespond();
            switch(response)
            {
                case 'x' : System.exit(0); break;
                case 't' : newTeam();
                case 'n' : newBuyer();
                case 'b' : buy();
                case 's' : showOdds();
                default : showMenu();
            }
        }
        while (continued(response));
        
    }
    
    private boolean continued(char response)
    {return (response != 'x');}
    
    public void newTeam()
    {
        teams.add(new Team());
    }
    
    public void newBuyer()
    {
        buyers.add(new Buyer());
    }
    
}