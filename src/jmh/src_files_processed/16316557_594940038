 */
import java.lang.*;

public class Lager
{
    public int lagartNummer;
    public int lagBestand;
    public int lagMbestand;
    public int lagHbestand;
    public int lagOptBestMenge;
    public int lagZugang;
    public int lagAbgang;
    public int bestellMenge;
    private Bestellung bestellung;


    /**
     * Konstruktor für Objekte der Klasse Lager
     */
    public Lager()
    {
       
    }
    
    public void speicher_loeschen()
    {
       this.bestellMenge=0; 
    }
     
    /**
     *  Methoden
     */
    public int getLagartNummer()
    {
          return this.lagartNummer;
    }
    
    public void setLagartNummer(int pLagartNr)
    {
        this.lagartNummer = pLagartNr;
    }
    
    public int getLagBestand()
    {
          return this.lagBestand;
    }
    
    public void setLagBestand(int pLagBest)
    {
        this.lagBestand = pLagBest;
    }
    
    public int getLagMbestand()
    {
      return this.lagMbestand;
    }
    
    public void setLagMbestand(int pLagMbest)
    {
        this.lagMbestand = pLagMbest;
    }
    
    public int getLagHbestand()
    {
      return this.lagHbestand;
    }
    
    public void setLagHbestand(int pLagHbest)
    {
        this.lagHbestand = pLagHbest;
    }
    
    public int getLagOptBestMenge()
    {
      return this.lagOptBestMenge;
    }
    
    public void setLagOptBestMenge(int pLagOptBM)
    {
        this.lagOptBestMenge = pLagOptBM;
    }
    
    public int getBestellMenge()
    {
      return this.bestellMenge;
    }
    
    public void setBestellMenge(int pLagBestMeng)
    {
        this.bestellMenge = pLagBestMeng;
    }
    
    public void zugangbuchen(int pLagZug)
    {
        this.lagZugang = pLagZug;
        
        this.lagBestand = pLagZug;
        System.out.println();
        System.out.println();
        System.out.println();
        
    }
    
    public void abgangbuchen(int pLagAbg)
    {
        this.lagAbgang = pLagAbg;
        
        if (this.lagBestand < this.lagAbgang)
        {
            System.out.println("Artikelnummer:         " + this.lagartNummer );
            System.out.println("Abbuchung in Höhe von: " + this.lagAbgang + " nicht möglich.");
            System.out.println("Maximale Abbuchung in Höhe von: " + this.lagBestand + " zulässig." + "\n");
            
        }
        else 
        {
            this.lagBestand = this.lagBestand - this.lagAbgang;
            System.out.println("Artikelnummer:         " + this.lagartNummer );
            System.out.println("Abbuchung in Höhe von: " + this.lagAbgang + " vorgenommen");
            System.out.println("Neuer Lagerbestand:    " + this.lagBestand + "\n");
            bestMengePruef();
        }
        
    }
    
    public void bestMengePruef()
    {
        if (this.lagBestand < this.lagMbestand)
        {
            this.bestellMenge = this.lagHbestand - this.lagBestand;
            System.out.println("Bestellmenge: " + this.bestellMenge + "\n");
            
        }
        if (this.bestellMenge > this.lagOptBestMenge)
        {
            System.out.println("Die berechnete Bestellmenge " + this. + " für Artikel-Nr.: " + this. + " ist größer als die Optimale Bestellmenge.");
            System.out.println("Die Bestellmenge wird auf " + this. + " festgelegt." + "\n");
            
            this.bestellMenge = this.;
            System.out.println("Bestellmenge: " + this.bestellMenge + "\n");
      
        }
        else
        {
            this.bestellMenge = this.lagHbestand - this.lagBestand;
            System.out.println("Bestellmege:" + this.bestellMenge) 
       
        
     
        
               
        }
    
}