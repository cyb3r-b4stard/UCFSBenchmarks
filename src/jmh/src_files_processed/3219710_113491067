
import java.util.Scanner;

public class futvaltableMB_Java
{
    public static void main(String[] args)
    {
        System.out.println("This program calculates the future value");
        System.out.println("of a 10-year investment with 1% to 20% APR.");
        int principal;
        
        System.out.println("Enter initial investment:");
        Scanner keyboard = new Scanner(System.in);
        principal = keyboard.nextInt();
        
        double apr = 0.01;
        
        for (int count = 1; count <= 10; count++);
        {
            System.out.print("principle = " + principal);
            double balance = principal;
            balance = principal * float (1 + apr);
            System.out.print(balance);
            System.out.print(apr);
        }
        System.out.println("End.");
    }
}