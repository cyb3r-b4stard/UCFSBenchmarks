import kareltherobot.*;
import java.awt.Color;

public class Mason extends UnionTrade
{
public Mason(int street, int avenue, Direction direction, int beepers, Color color)
    {
        super(street, avenue, direction, beepers, color);
    }
    private void plantRow()
    { move();
       plantCarrot();
       plantCarrot();
       plantCarrot();
       plantCarrot();
		plantCarrot();
       plantCarrot();
       plantCarrot();
       plantCarrot();
       plantCarrot();
       plantCarrot();
       plantCarrot();
       plantCarrot(); 
    }
public void plantRows()
{
	plantRow();
    nextRow();
    plantRow();
    finish();
}
    
private void finish()
{
	move();
	turnAround();
 	turnOff();
}    
   
 private void nextRow()
{
	turnRight();
	move();
	turnRight();
}


private void plantCarrot()
{
  	putBeeper();
  	putBeeper();
  	burySeed();
  	move();     
  }
}}