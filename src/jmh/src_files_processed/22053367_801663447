import java.util.Scanner;
/**
 * #### #################
 * 
 * @###### #######, #######
 * @####### ####.##.##
 */
public class SphereMeasurements
{
    /**
     * Statment for lab2
     * @param args intro to java
     * Sphere and string modification
     */
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
        int radius = input.nextInt();
        double volume = (4 / 3 * (Math.PI * Math.pow(radius, 3)); 
        double surfaceArea = (4 * (Math.PI * (Math.pow(radius, 2))));
        System.out.printf("Enter the radius: ");
        radius = input.nextInt();
        System.out.printf("The surface area is: %.3f\n", surfaceArea);
        System.out.printf("The volume is: %.3f", volume); 
        
        
    }
}



