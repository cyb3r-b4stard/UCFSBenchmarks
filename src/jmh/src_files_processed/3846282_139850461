import java.io.*;
public class lettura {
    public static void main( String[]args)throws Exception{
        
        int anni;
        System.out.print("Quanti anni hai?");
        
        BufferedReader inserimento = new BufferedReader(new InputStreamReader (System.in));
        
        String line = inserimento.readLine();
        anni= Integer.parseInt(line);
        
        System.out.println(anni);
        
        if (anni>18) {
            System.out.print("Sei maggiorenne");
        }
        else{
            System.out.print("Sei un beb√®");
        }
        
        String riga;
        do  while(riga=="male");{
        System.out.print("Come stai?(bene/male)");
        riga = inserimento.readLine();
    }
}
    }
        