public class Schleife
{
    public void schleifentest()
    {
        int kuchen = 8;
        while (kuchen > 0)
        {
            int kuchen;
            System.out.println ("Jetzt kaufe ich Kuchen. ";
            kuchen = 5;
            for(; kuchen > 0; kuchen-- )
        {
        System.out.println ("Kein Kuchen mehr");
    }
}
