class Rectangle

{
    int height;
    int width;
    
    Rectangle()
    {
        this.width = 0;
        this.height = 0;
        System.out.println("Initialised:");
    }
       
    void shrink()
    {
        System.out.println("shringing..");
        this.width = this.width - 1;
        this.height = this.height -1;
    }
    void showDimensions()
    {
        System.out.println("The dimensions are width "+ this.width+ " and height " + this.height+".");
    }
    void showArea()
    {
        this.area = this.width * this.height;
        System.out.println("The area of the rectangle is " + this.area +"."); 
    }