import java.util.Scanner;
public class GradeCalculator
{
    public static void main(String[] ags)
    {
        final double advancedGradeRate = .06;
        Scanner s = new Scanner(System.in);
        System.out.println("What is the name of your course?");
        String course = s.nextLine();
        System.out.println("What grade did you recieve on this exam?");
        double grade = s.nextDouble();
        DecimalFormat f = new DecimalFormat("0.###");
        double extraPoints = grade*advancedGradeRate;
        double adjustedScore = grade + extraPoints;
        System.out.println("Your adjusted grade for Advanced" + course + " is " + f.format(adjustedScore));
        