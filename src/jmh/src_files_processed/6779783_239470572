
/*
###### ######### ## ####### ### ###### # ####.
 */

package Sis_copa; 
public class CidadeSede
{
    
    private int codigo;
    private String descricao;
    private String estado;
    private int qEstadio;

    /*
     ***** Métodos da classe
     */
    
    /*
     ***** Construtor
     */
    public CidadeSede(int cod,String desc,String est)
    {
       codigo = cod = 100;
       descricao = desc = "";
       estado = est = "";
       qEstadio = 0;
    }

    public void adicionaNovoEstadio()
    
    {
       this.qEstadio ++
    }
    
    /*
     ***** Métodos SET 
     */
    
    public void setCod(int c)
    
    {
       c = codigo;
    }
    
    public void setDesc(String d)
    
    {
       d = descricao;
    }
    
    public void getEstado(String e)
    
    {
       e = estado;
    }
    
    public void getQestadio(int q)
    
    {
       q = qEstadio;
    }
    
    
    
    /*
     ***** Métodos GET 
     */
    
    public int getCod()
    
    {
       return codigo;
    }
    
    public String getDesc()
    
    {
       return descricao;
    }
    
    public String getEstado()
    
    {
       return estado;
    }
    
    public int getQestadio()
    
    {
       return qEstadio;
    }
}