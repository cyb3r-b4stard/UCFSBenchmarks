
import sum.kern.*;
/**
 * @###### #### #######
 * @####### ##.##.##
 */
public class Tastatur
{
    Bildschirm derBildschirm;
    Stift meinStift;
    Maus meineMaus;
    Tastatur dieTastatur;

    public Tastatur()
    {
        derBildschirm = new Bildschirm();
        meinStift = new Stift();
        dieTastatur = new Tastatur();
        meineMaus = new Maus();
    }

    public void fuehreAus()
    {
        meinStift.bewegeBis(100, 100);
        do
        {
            if (dieTastatur.wurdeGedrueckt())
            {
                char zeichen;
                zeichen = dieTastatur.zeichen();
                switch (zeichen)
                {
                    case Zeichen.PFEILRECHTS : meinStift.runter();
                                               meinSitft.bewegeUm(50);
                                               meinStift.hoch();break;
                    case Zeichen.PFEILLINKS  : meinStift.runter();
                                               meinStift.dreheBis(180);
                                               meinStift.bewegeUm(50);
                                               meinStift.hoch();break;
                    case Zeichen.PFEILOBEN   : meinStift.runter();
                                               meinStift.dreheBis(90);
                                               meinStift.bewegeUm(50);
                                               meinStift.hoch();break;
        
                                               
                                               
                                               
                                               
        meinStift.gibFrei();
        derBildschirm.gibFrei();
        dieTastatur.gibFrei();
        meineMaus.gibFrei();
    }
}