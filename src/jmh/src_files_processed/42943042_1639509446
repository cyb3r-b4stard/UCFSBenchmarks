
import java.util.Scanner;
import java.util.Random;
public class RPS
{
	private String playChoice;
	private String compChoice;
	Random random = new Random();

	public RPS()
	{
	}

	public RPS(String player)
	{
	    setPlayers(player);
	}

	public void setPlayers(String player)
	{
	    playChoice = player.toLowerCase();
	    int rps = random.nextInt(75);
	    if (rps >=0 && rps <=24)
	    {
	        compChoice = "r";
	    } else if (rps >= 25 && rps <= 49){
	        compChoice = "p";
	    } else if (rps >= 50 && rps<=75){
	        compChoice = "s";
	    }
	}

	public String determineWinner()
	{
		String winner="";
		String method = "";
		if((compChoice == "r" && playChoice = "s") || (compChoice == "p" && playChoice = "r") || (compChoice == "s" && playChoice = "p"))
		{
		    if(compChoice == "r")
		    {
		       method = "breaks"; 
		    }else if(compChoice == "p"){
		       method = "covers"; 
		    }else{
		       method = "cuts"; 
		    }
		    winner = "Computer wins!\n" + compChoice + " "+method+" " + playChoice;
		}else if((compChoice == "r" && playChoice = "s") || (compChoice == "p" && playChoice = "r") || (compChoice == "s" && playChoice = "p")
		return winner;
	}

	public String toString()
	{
		String output="";
		return output;
	}
}