public class HotelCalifornia
{
    private Employee manager;
    private Employee person1;
    private Employee person2;
    private int numRooms;
    private int numRoomsOccupied;
    private double pricePerNight;
    private int numFloors;
    private String nameHotel;
    
    public HotelCalifornia()
    {
        manager = new Employee();
        person1 = new Employee();
        person2 = new Employee();
        numRooms = 20;
        numRoomsOccupied = 18;
        pricePerNight = 287.87;
        numFloors = 4;
        nameHotel = "Hotel California";
    }
    
    private HotelCalifornia(String name1, String name2, String name3, double sall1, double sall2, double sall3, int numRooms, int numRoomsOccupied, double pricePerNight, int numFloors, String nameHotel )
    {
        manager = new Employee(name1, sall1, true);
        person1 = new Employee(name2, sall2, false);
        person2 = new Employee(name3, sall3, false);
        this.numRooms = numRooms;
        this.numRoomsOccupied = numRoomsOccupied;
        this.pricePerNight = pricePerNight;
        this.numFloors = numFloors;
        this.nameHotel = nameHotel;
        if (sall3> sall2) System.out.println(name2 + " needs a greater salary than " name3);
    }
    
    public void numRoomsOccupied(int x)
    {
        if (x < numRooms)x = numRoomsOccupied;
        System.out.println("The number of occupied rooms cannot exceed " + numRooms + " rooms");
    }
    
    public void changePrice(int pricePerNight)
    {
        this.pricePerNight = pricePerNight;
    }
    
    public void fireManager (String name)
    {
        manager = person2;
        person2 = new Employee(name, salary - salery*.2,false)
    }
}