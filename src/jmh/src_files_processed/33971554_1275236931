

import javax.swing.*;
public class radio extends JFrame 
{
    JPanel pnl = new JPanel();
    JRadioButton r1= new JRadioButton("red" , true); 
    JRadioButton r2= new JRadioButton("blue" , true); 
    JRadioButton r3= new JRadioButton("green" , true); 
    
      ButtonGroup color= new ButtonGroup();

      public radio()
      {
          super("WINDOW");
          setSize(400, 400);
          setDefaultCloseOperation(EXIT_ON_CLOSE);
          add(pnl);
          color.add(r1);
          color.add(r2);
          color.add(r3);
          add.pnl(r1);
          add.pnl(r2);
          add.pnl(r3);
          
          setVisible(true);
        }
         
       

          public static void main(String args[])
          {
              radio gui = new radio();
          }
          