
/**
 * ##### # ########### ## ##### ######### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class LuhnCheck
{
    private int x;

    /**
     * Constructor for objects of class LuhnCheck
     */
    public LuhnCheck()
    {
        x = 0;
    }

    static int verify_checksum(char *credit_card)
    {
   char *cp;
   int dbl;
   int check_sum;

   check_sum = 0;
   dbl = 0;
   cp = credit_card + strlen(credit_card) -1;
   while (cp >= credit_card)
   {
      int c;

      c = *cp-- -'0';

      if (dbl)
      {
         c *= 2;
         if (c >= 10)
         c -= 9;
      }
      check_sum += c;
      dbl = !dbl;
   }
   return ((check_sum % 10) == 0);
   }
}