/** 
 * ######## #### ### ######### ## ######, # ### #### # # ####
 * @###### (# ### ####) 
 * @####### (###### ## ###### ## ####)
 * 
 * # ######## #### ### ####### ## ######.
 */
public class RowOfSquares2  extends Group { 

    public RowOfSquares2 ( double x, double y, int nSquares, int size )
    {
        Rectangle rect1 = new Rectangle(x, y, size, size); 
        rect1.setStrokeWidth(2);
        rect1.setStroke(Color.BLUE);
        rect1.setFill(Color.BLUE);
        this.getChildren().add(rect1);

        Rectangle rect2 = new Rectangle(x + size, y, size, size); 
        rect2.setStrokeWidth(2);
        rect2.setStroke(Color.GREEN);
        rect2.setFill(Color.GREEN);
        this.getChildren().add(rect2);

        this.draw (x,y, nSquares, size);

    }    

    public RowOfSquares (double x, double y, int nSquares, int size)
    {
        this.draw ( x, y, nSquares, size 
    }

    private void drawRowOfSquares( double x, double y, int nSquares, int size )
    {

        for(int i = 0; i < nSquares; i++)
        {
            Rectangle rect = new Rectangle(x + size*i , y, size, size); 
            rect.setStrokeWidth(2);
            rect.setStroke(Color.GREEN);
            rect.setFill(Color.GREEN);
            this.getChildren().add(rect);

        }    
    }

    public voide setStrokeWidth (int strokeWidth )
{
    for (Node r: this.getChildren())
    {
        Rectangle r= (rectangle ) node;
        r.setStrokeWidth ( strokeWidth); 

    }
}

} 
