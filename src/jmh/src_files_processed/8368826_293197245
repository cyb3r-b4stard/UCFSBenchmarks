public class Plancelular
{
    private String codigo;
    private String nombrePlan;
    private int cantidadMinutos;
    private boolean estado; 
    private int valorMinuto;
    private int costoTotal;
    private int minutosConsumidos;
    private Cliente cliente; 
    private int fechaActivacion;
    private int diasActivados;
    
    /**
     * Constructor for objects of class Plancelular
     */
    public Plancelular(String codigo, int cuantoValeElminuto,int diasActivados, Cliente cliente)
    {
       setCodigo(codigo);
       setValorMinuto(cuantoValeElminuto);
       setDiasActivados(diasActivados);
       this.estado=false;
       this.cliente=cliente;
    }
    
    
    /**
     * Getter de codigoi
     * @return String, codigo del plan
     * 
     */
    public String getCodigo(){
        return codigo;
    }
    
    
    /**
     * Getter del valor minuto
     * @return int, valor del minuto del plan
     */
    public int getValorMinuto(){
        return valorMinuto;
    }
    
    
    /**
     * Getter de dias de activador
     * @return int, dias de activados el plan
     * 
     */
    public int getDiasActivados(){
        return diasActivados;
    }
    
    
    /**
     * Getter del estado del plan
     * @return boolean, si esta activado el plan
     */
    public boolean getEstado(){
        
        return estado;
    }
        
    
    /**
     * Setter del codigo
     * @param String, le da un codigo al plan
     */
    public void setCodigo(String codigo){
        if(codigo.length()==5){
            this.codigo=codigo;
        }
    }
    
    
    /**
     * Setter del valor del minuto
     * @param int, le da valor al minuto del plan
     * 
     */
    public void setValorMinuto( int valorMinuto ) {
        if ( valorMinuto>50 ){
            
            this.valorMinuto=valorMinuto;
        }
        else{
            System.out.println("vALOR MINUTO DEBE SER MAYOR A 50");
        }  
    }
    
    
    /**Setter dias de activacion
     * @param int, cantidad de dias a activar
     * 
     */
    public void setDiasActivados(int diasActivados){
        if ( diasActivados>5){
            this.diasActivados=diasActivados;
        }
        
    }
    
    public void imprimirPlan(){
        
        
        System.out.println("Codigo Plan" + getCodigo());
        System.out.println("valor minuto" + getValorMinuto());
        System.out.println("dias activacion " + getDiasActivados());
        
    }
    
    public void activarPlan(){
       
        if ( getEstado()==false && getDiasActivados()>2){
            estado=true;
        }
        else{
            System.out.println("Estimado usuario, aun no comple con los requisitos de activacion");
        }
    }
    
    
    public void imprimirPlanCliente(){
        
        System.out.println("*************************************************************");
        System.out.println("Rut cliente = " + cliente.getRut());
        
        
        
    }
        

  