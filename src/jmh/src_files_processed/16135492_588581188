 */
public class Item
{
    private String name;
    private String description;
    private int value;
    private int weight;
    private String action;
    private inputCheck;

    /**
     * Constructor for objects of class Item
     */
    public Item(String name, String description, int value, int weight, String action)
    {
        this.name = name;
        this.description = description;
        this.value = inputCheck.checkInt(value);
        this.weight = weight;
        this.action = action;
    }

   /**
     * Mutator method for the field name
     */
    public void setName(String name) {
        this.name = name;
    }  
    
    /**
     * noenoenoenoenoenoe
     */
    public void setDescription(String description) {
        this.description = description;
    }
  
    /**
     * noenoenoenoenoenoe
     */
    public void setValue(int value) {
        this.value = value;
    }
    
     /**
     * noenoenoenoenoenoe
     */
    public void setWeight(int weight) {
        this.weight = weight;
    }
    
    /**
     * noenoenoenoenoenoe
     */
    public void setAction(String action) {
        this.action = action;
    }
   
    /**
     * noenoenoenoenoenoe
     */
    public String getName() {
        return this.name;
    }
    
    /**
     * noenoenoenoenoenoe
     */
    public String getDescription() {
        return this.description;
    }
    
    /**
     * noenoenoenoenoenoe
     */
    public int getValue() {
        return this.value;
    }
    
    /**
     * noenoenoenoenoenoe
     */
    public int getWeight() {
        return this.weight;
    }
    
    /**
     * noenoenoenoenoenoe
     */
    public String getAction() {
        return this.action;
    }
    
    /**
     * noenoenoenoenoenoe
     */
    public void print() {
        System.out.println("Item's name is: " + name);
        System.out.println("Item's description is: " + description);
        System.out.println("Item's value is: " + value);
        System.out.println("Item's weight is: " + weight);       
        
    }
    
    /**
     * vetikke
     */
    public String toString() {
       String itemInfo = "navn: " + name + "description: " + description + "value: " + value + "weight: " + weight;
       return itemInfo;
    }
    
}