 */
public class FirstAndLast
{

    private String words;
    /**
     * constructs an object with the given string of words
     * @param words the string of characters for this object
     */
    public FirstAndLast(String words)
    {
        this.words = words;
    }

    /**
     * Determines if the string consists of a single letter
     * @param in the string to check. 
     * @return false if the string is not a single character 
     * of if that character is not a letter otherwise returns 
     * true
     */
    public static boolean isLetter(String in)
    {
        if (in.length() > 1)
        {
            return false;
        }

        return Character.isLetter(in.charAt(0));
    }

    /**
     * Gets the first letter of the string
     * @return firstLetters the first letter of the string
     */
    public String firstLetters()
    {
        String firstLetters = "";
        String firstLetter = words.substring(0,1);
        int space = words.indexOf(" ",0);

        for ( int i = 0; i < words.length(); i)
        {
            firstLetters = word.substring
        }
        System.out.println(space);
        return firstLetter + firstLetters;
    }

    /**
     * Gets the last letter of the string
     * @return lastLetters the last letter of the string
     */
    public String lastLetters()
    {
        String lastLetters = "";
        int i = 0;
        while ( i < words.length())
        {
            String letters = words.substring( i, i + 1 );
            if (isLetter(letters) == false)
            {
                if (isLetter(words.substring(i - 1, i)) == false )
                {
                    lastLetters = lastLetters + words.substring(i - 2, i - 1);
                }
                else
                {

                    lastLetters = lastLetters + words.substring(i-1, i);
                }
            }
            i++;
        }
        return lastLetters;
    }

    /**
     * Sets a new sentence in this object
     * @param theWords the new sentence to set
     */
    public void setSentence(String theWords)
    {
        words = theWords;
    }

    /**
     * Gets the words typed in the string
     * @return words the words inputted into the string.
     */
    public String getSentence()
    {
        return words;
    }
}