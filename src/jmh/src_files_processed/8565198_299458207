import java.util.ArrayList;

public class ListaDeCompras{
    private ArrayLista<Produto>lista;
    public ListaDeCompra(){
        lista = new ArrayList<Produto>();
    }
    public ArrayList<Produto>getLista(){
        return lista;
    }
    public void setLista(ArrayList<Produto>lista){
        this.lista=lista;
    }
    @Override
    public String toString(){
        return "ListaDeCompras{"+"lista="+lista'}';
    }
    public void adicionarProduto(Produto p1){
        this.lista.add(p1);
    }
    public void apagarTudo(){
        this.lista.clear();
    }
    public int obterQuantidadeDeProdutos(){
        return this.lista.size();
    }
    public double calcularToalDaLista(){
        double soma =0;
        for(int i=0; i<this.lsita.size();i++){
            soma=soma + this.lista.get(i).calcularTotal*();
        }
        return soma;
    }
    public Produto pesquisarProdutoPorNome(String nome){
        Produto p1 = null;
        for(int i = 0; i<this.lista.size() && p1==null; i++){
            if(this.lista.get(i).getNome().equalsIgnoreCase(nome)){
                p1 = this.lista.get(i);
            }
        }
        return p1;
    }
    public ArrayList<Produto>pesquisarProdutosAte10Reais(){
        ArrayList<Produto>produtoAte10Reais = new ArrayList<Produto>();
        for(int i = 0; i <this.lista.size(); i++){
            if(this.lista.get(i).getValorUnitario()<=10){
                produtosAte10Reais.add(this.lista.get(i));
            }
            return produtosAte10Reais;
        }
    }
}
    
