)
 */
import java.io.*;
public class EjercicioTresGuia
{
    public static void main(String[]args) throws IOException
    {
        InputStreamReader isr = new InputStreamReader (System.in);
        BufferedReader br= new BufferedReader (isr);
        /**
         * 1.-Se determina el largo del arreglo
         */
        System.out.print("ingrese el cantidad de numeros:  ");
        int n= Integer.parseInt (br.readLine());
        /**
         * 2.-definir el tipo del arreglo y su dimencion o largo
         */
        int numero[] = new int[n];
        /**
         * /3.-leer y asignar valores al arreglo
         * en este casop se "leer√° por consola"
         */
        
        int i;
        for (i=0; i<n;i++)
        {
            System.out.print(" ingrese numero["+i+"] = ");
            numero[i] = Integer.parseInt (br.readLine());
        }
        /**
         * 4.-Proceso: se asignara 0 a los numeros negativos
         */
        int numpos=numero[0];
        int numneg=numero[0];
        for (i=0; i<n;i++)
        {
            if (numero[i]>=0)
            {
                numpos = numero[i];
                
            }
            else
            {
                numneg = 0;
                
            }
        }
         
            /**
         * 5.- se entrega resultados
         */
        
        System.out.println(" el resultante es"+numero[]+" : "+numpos);
        System.out.println(" el resultante es : "+numneg);
    }
        
        
        
        
        
    }
    