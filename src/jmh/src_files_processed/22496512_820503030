import java.util.Scanner;
public class Arrr
{
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
       
        String yn = "Yar";
        while (yn.equalsIgnoreCase("Yar"))
    {
        System.out.println("Please type a sentence to be pirated:");
        String answer = input.nextLine();
        
        System.out.println("Arrr! " + answer + ", Matey!");
        
        System.out.println("Do you want to try again (Yar/Nar)");
        
        yn = input.nextLine();
    }
    while (yn.equalsIgnoreCase("Nar"))
    {
        end;
    }
    }
}