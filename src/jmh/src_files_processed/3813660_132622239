package aufgabe4;


public class Tresor
{
    private boolean offen;
    private final int CODE;
    private int anzahlFehlversuche;
    private String text;

    Tresor(int code)
    {
        if (code>9999)
        {
            CODE= 1234;
        }
        else
        {
            CODE= code;
        }
    }

    public boolean oeffnen(int code)
    {
       for ( anzahlFehlversuche=0 , anzahlFehlversuche<=3 )
        {
            if (this.CODE==code)
            {
                offen=true;
            }
            else
            {
                anzahlFehlversuche++;
                offen=false;
            }
        }

        public void schliessen()
        {
        }

        public boolean speichern(String geheimText)
        {

            if (offen==true)
            {
                text=geheimText;
            }
        }

        public String toString()
        {
        }
    }