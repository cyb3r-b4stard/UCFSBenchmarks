import java.util.Scanner;  
public class ProblemSet6
{
static Scanner sc;
public static int palindrome(String word) 
{
int answer;
String temp="",word2;
for (int x = word.length () - 1 ; x >= 0 ; x--) 
    temp += word.charAt(x);
word2 = temp;
if("word"=="word2")
answer=1;
else if("word"!="word2")
{
answer=0;
}
return answer;
}

public static String Single (String word) 
{
word=word.replaceAll("\\W","");
word=word.replaceAll("\\s","");
word=word.toLowerCase();
return word;
}

public static void Palindrome()
{
int answer==1;
String word;
System.out.print("Enter a word: ");
word = sc.nextLine();
word=Single(word);
answer=palindrome(word);
if(answer==1)
System.out.print("Congratulations, your word is a Palindrome!");
else 
if(answer==0)
System.out.print("Unfortunately, your word is not a Palindrome.");

}

public static String Shiftcode(String sentence)
{
int length,x=0,y;
length=sentence.length();
char character;
y=length+1;
while(x!=y)
{
x++;
sentence=sentence.replace("sentence.charAt(x)","sentence.charAt(x)"+4);

}
return sentence;
}

