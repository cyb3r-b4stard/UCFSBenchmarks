import java.awt.*;
import javax.swing.*;
/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class TriangleBall extends Ball{
    Color c;
    public TriangleBall(int x, int y){
        super(x, y, Color c);
        
        super.move(x, y);
    }
    
    public void paint(Graphics g){
        
        Polygon triangle = new Polygon();
        triangle.addPoint(xLoc, yLoc - 40);
        triangle.addPoint(xLoc - 34, yLoc + 20);
        triangle.addPoint(xLoc + 34, yLoc + 20);
        g.setColor(c);
        g.fillPolygon(triangle);
    }
}