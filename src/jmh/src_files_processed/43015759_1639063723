        {
            System.out.print(" \n Enter the number of house worked: ");
            hrs=scnnr.nextInt();
            Salary=hrs*150-500;
            
            System.out.println("Name: "+ fname);
            System.out.println("Position: Supervisor");
            System.out.println("Benefits: Medicard and Credit Union");
            System.out.println("Hours worked: " + hrs);
            System.out.println("Salary: " + Salary);
        }
        
         if(option.equals("option2"))
           {
            System.out.println(" \n Enter the number of hours worked: ");
            hrs=scnnr.nextInt();
            Salary=hrs*150-5000;
            
            System.out.println("Name: " + fname);
            System.out.println("Position: Supervisor");
            System.out.println("Benefits: Medicard,Credit Union and Housing");
            System.out.println("Housr worked: " + hrs);
            System.out.println("Salary: " + Salary);
        }
        
         if(option.equals("option3"))
             {
              System.out.println(" \n Enter the number of hours worked: ");
              hrs=scnnr.nextInt();
              Salary=hrs*150;
             
             System.out.println("Name: " + fname);
             System.out.println("Position: Supervisor");
             System.out.println("Benefits: none");
             System.out.println("Housr worked: " + hrs);
             System.out.println("Salary: " + Salary);
        }   
    } 
     if (position.equals("b"))
        {
             System.out.println("Select your availed benefits: ");
             System.out.println("option1 MediCard and Credit Union=500");
             
             System.out.println("option3 None");
             System.out.println("Enter the availed benefits");
             option=scnnr.nextLine();
             
             if(option.equals("option1"))
             {
              System.out.print(" \n Enter the number of hours worked: ");
              hrs=scnnr.nextInt();
              Salary=hrs*50-5--;
              
              System.out.println("Name: " + fname);
              System.out.println("Position: staff");
              System.out.println("Benefits: Medicard and Credit Union");
              System.out.println("Hours worked: " + hrs);
              System.out.println("Salary: " + Salary);
         }
          if(option.equals("option2"))
             {
              System.out.println(" \n Enter the number of hours worked: ");
              hrs=scnnr.nextInt();
              Salary=hrs*50;
         
             System.out.println("Name: " + fname);
             System.out.println("Position: staff");
             System.out.println("Benefits: none");
             System.out.println("Hours worked: " + hrs);
             System.out.println("Salary: " + Salary);
         }
   }
    if (position.equals("c"))
  
   {
            System.out.println (" \n Enter the number of hours worked: ");
            hrs=scnnr.nextInt();
            Salary=hrs*50;
            
           System.out.println("Name: " + fname);
           System.out.println("Position: part-time");
           System.out.println("Benefits: none");
           System.out.println("Hours worked: " + hrs);
           System.out.println("Salary: + Salary");
        }
    }
