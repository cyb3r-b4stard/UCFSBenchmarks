import java.util.Scanner;
public class salary_computation
{
    public static void main (String[] args)
    {
        Scanner scnnr=new Scanner (System.in);
        String fname,position,option;
        int Salary,hrs;
        int Option1=500,Option2=1500;
        
        System.out.println("Enter your name ");
        fname=scnnr.nextLine();
        
    System.out.println ("Select your position");
    System.out.println ("a. Supervisor");
    System.out.println ("b. Staff");
    System.out.println ("c. Part-time");
    System.out.println ("Enter the letter of your Position");
    position=scnnr.nextLine();
    
    if (position.equals("a"))
    {
        System.out.println ("Select your availed benefits: ");
        System.out.println ("option1 MediCard and Credit Union=500");
        System.out.println ("option2 MediCard,Credit Union and Housing=1500");
        System.out.println ("option3 None");
        System.out.println ("Enter the availed benefits");
        option=scnnr.equals("option");
        
