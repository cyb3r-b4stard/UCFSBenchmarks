
package nz.ac.aut.programming1.homework4;

import static nz.ac.aut.programming1.homework4.Methods.*;

public class Q8 {

    void findImage() {
        
        int beepers = 0;
        int heightOfRoom = 0;
        int widthOfRoom = 0;
     
        
            turnRobotLeft();
            while(isSpaceInFrontOfRobotClear())
            {
                moveRobotForwards();
                ++heightOfRoom;
            }
            if(isRobotFacingWall())
            {
                turnRobotLeft();
                turnRobotLeft();
                turnRobotLeft();
            }
            
        while(isSpaceInFrontOfRobotClear()){  
            while(isItemOnGroundAtRobot())
            {
               pickUpItemWithRobot();
               ++beepers;
            
                if(beepers%2 == 0)
                {
                print(" ") ;   
                }
                if(beepers%2 >= 1)
                {
                print("@")  ;  
                }
            }
            beepers = 0;
            moveRobotForwards();
            ++widthOfRoom;
        
            
            }
            
            
            
             }
       
        print(widthOfRoom);
        }
    }
   
    
