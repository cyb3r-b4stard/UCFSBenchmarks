
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Main
{
   public static void main(String[] args)
   {
       int[] pipe= new int[17];
       int milton = 9;
       int direction = 0;
       int steps = 0;
       int eaten = 0;
       int ranover=0;
       while(int turns=0;turns<10;turns++)
       {
           for(int p=0;p<17;p++)
            pipe[p]=0;
           pipe[milton]=1; 
           while(milton>=1 && milton <=15)
           {
               pipe[milton] = 0;
               direction = (int)(Math.random()*2);
               if(direction == 0)
                    direction = -1;
               milton = milton + direction;
               pipe[milton] = 1;
               for(int p=0;p<17;p++)
                    System.out.print(""+pipe[p]);
               System.out.println();
               steps++;
           }
           if(milton==0)
           {
               System.out.println("milton was eaten by a snake after "+steps+" steps");
               eaten++;
           }
           else
           {
             System.out.println("milton got ran over by a lawn mower after "+steps+" steps"); 
             ranover++;
           }
       }
   }
}