public class eDiary {

   public static void main( String Argv[] ) {
       int i = 0;
       String[]event = new String[7];
       while (i < 7)
       {
        event[i-1] = Console.readString("Tell me the major event of day" + i);
        i = i + 1;
      
    }
     i = Console.readInt("What day would you like to hear about? (Enter 0 to quite) ");
    while (i != 0)
    {
        System.out.printString("On day " + (i-1) + ":" + event[i-1]); 

}
    Else
    {
        System.out.printInt("Bye!");
}
}
}