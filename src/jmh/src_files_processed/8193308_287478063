import java.io.*;
import java.util.*;
import opennlp.tools.sentdetect.SentenceDetectorME;
import opennlp.tools.sentdetect.SentenceModel;
import java.util.Arrays;
public class Testing{
    static String fileName = "";
    static String keyword = "";
    static int i = 0;
    static int length = 0;
    public static void init() throws IOException {
        System.out.println("Please enter the text file you are searching for :");
        Scanner scan = new Scanner(System.in);
        fileName = scan.nextLine();
        SentenceModel model = new SentenceModel(new File("C:\\Users\\jkwoffor\\Documents\\REU\\shit\\en-sent.bin"));
        SentenceDetectorME sentenceDetector = new SentenceDetectorME(model);
        Scanner sc = new Scanner(new File("C:\\Users\\jkwoffor\\Desktop\\jfs\\" + fileName));
        String filedump = "";
        System.out.println("Keyword?");
        Scanner scan2 = new Scanner(System.in);
        keyword = scan.nextLine();
       
        while(sc.hasNextLine()){
            filedump += sc.nextLine();
        }
        String sentences[] = sentenceDetector.sentDetect(filedump);   
        length = sentences.length;
        while (i < length) {
            if sentences[i].contains(keyword)
            System.out.println(sentences[i]);
            i++;
        }
    }
}