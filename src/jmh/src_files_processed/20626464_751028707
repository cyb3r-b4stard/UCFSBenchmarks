public class Ampel
{
  private Kreis obereslicht;
  private Kreis mittlereslicht;
  private Kreis untereslicht;
  private Rechteck gehäuse;
  
  public Ampel(){
      gehäuse = new Rechteck();
      obereslicht = new Kreis();
      mittlereslicht = new Kreis();
      untereslicht = new Kreis();
      int a=1;
      
      
      gehäuse.setzeFarbe("schwarz");
      gehäuse.setzeDimensionen(0, 0, 40, 120);
      obereslicht.setzeMittelpunktUndRadius(5, 5, 15);
      mittlereslicht.setzeMittelpunktUndRadius(5, 45, 15);
      untereslicht.setzeMittelpunktUndRadius(5, 85, 15);
      obereslicht.setzeFarbe("rot");
     
      }
   
      void umschalten(){
        sitch(a) {
        case 1:
        obereslicht.setzeFarbe("grau");
        mittlereslicht.setzeFarbe("orange");
        a=2;
        break;
        
        case 2:
        mittlereslicht.setzeFarbe("grau");
        untereslicht.setzeFarbe("grün");
        a=3;
        break;
        
        
        }
        
        
        }
    
}