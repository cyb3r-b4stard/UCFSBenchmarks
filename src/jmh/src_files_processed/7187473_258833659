import java.util.Scanner;
public class TiendaOnline
{
    private ProductoEnStock stock;
    private Carrito carro;
    private Scanner s;
    private HashMap<Integer,ProductoEnStock>stocks;

    /**
     * Constructor for objects of class TiendaOnline
     */
    public TiendaOnline()
    {

        
        stocks = new HashMap<Integer,ProductoDEnStock>();
       
        
    }
    
    public void anhadirStock(Componente c,ProductoEnStock pS)
    {
       
        if(stock.containsKey(c.getCodInterno())){
            int unid = getUnidades()+pS.getUnidades();
            setUnidades(unid);
            System.out.println("El producto ya esta en la base de datos");
            }
        else{
        stock.put(c.getCodInterno(),pS);
    }
    public void consultarProducto(int codigo)
    {
        ProductoEnStock pS = stock.get(codigo);
        System.out.println("           UNIDADES EN STOCK             ");
        System.out.println("----------------------------------------------------------------------");
        System.out.println("Unidades Disponibles: "    + getUnidades());
        getComponente().printInfo();
       
    }
    public void imprimirStock()
    {
        for(ProductoEnStock e : stock.values()){
            System.out.println("Unidades Disponibles: "    + getUnidades());
            getComponente().printInfo();
        }
    }
    
    
    

}       