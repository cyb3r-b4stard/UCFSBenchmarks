public class StudentMarks {
    public static void main (String args []){
       String name;
       int mark =0 ;
       int sum = 0;
       int highest = 0;
       int lowest = 100;
       double average = 0;
        
       final int CLASSSIZE = 7;
       Student[] students = new Student [CLASSSIZE];
       System.out.println("*** Mark application ***");
       System.out.println("-- Input student's mark --");
       for ( int i = 0; i <CLASSSIZE; i++ ){
         System.out.println("Input name :"); 
         name = Keyboard.readString();
         System.out.println("Input mark :");
         mark = Keyboard.readInt();
         students[i] = new Student (name, mark);  
           if(mark> highest )  highest =mark;
           if(mark> lowest)  lowest =mark;
           sum += mark;
        }
        average = sum / CLASSSIZE
    }
}