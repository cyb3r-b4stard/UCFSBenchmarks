




public class Ticketautomat 
{
    privat int preis;
    privat int bisherGezahlt;
    
    public Ticketautomat(int ticketpreis)
    {
        preis = ticketpreis;
        bisherGezahlt = 0;
    }

    public int gibPreis()
    {
        return preis;
    }

        public void wählePreis(int neuerpreis)
    {
        preis = neuerpreis;
    }
    
    public int gibBisherGezahltenBetrag()
    {
        return bisherGezahlt;
    }

    public void geldEinwerfen(int betrag)
    {
        bisherGezahlt = bisherGezahlt + betrag;
    }

        public void geldzurück ()
    {
        System.out.println ("Rückgeld "+ bisherGezahlt);
        bisherGezahlt = 0;
    }
    
    public void ticketDrucken()
    {
            if (bisherGezahlt >= preis)
            {
            System.out.println("##################");
            System.out.println("# Die BlueJ-Linie");
            System.out.println("# Ticket");
            System.out.println("# " + preis + " Cent.");
            System.out.println("##################");
            System.out.println();
            bisherGezahlt = bisherGezahlt - preis;
        }
        else
        {
            System.out.println ("Fehler");
            System.out.println ("Bitte mehr Geld einwerfen");

        }
    }
}