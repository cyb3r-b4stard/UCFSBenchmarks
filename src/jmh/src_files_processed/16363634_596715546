
public class Karol
{
    private Environment _map;
    private int _state;

    public Karol()
    {
        _map = new Environment();
        _map.deploy(this);

        _state = 0;
    }

    public void setState(int newState)
    {
        _state = newState;
    }

    public int stepEmptyMap()
    {
      
if(_state == 0) 
{
if(!_map.hasWallNorth()) 
{
return Environment.NORTH; 
}
else 
{
_state = 1; 
return Environment.NONE;
}
}
else if(_state == 1) 
{
if(!_map.hasWallSouth()) 
{
return Environment.SOUTH; 
}
else 
{
_state = 0; 
return Environment.NONE;
}
}
return Environment.NONE;



        else if(_state == 2)
        {
            if(!_map.hasWallEast()) 
            {
                return Environment.EAST; 
            }
            else
            {
                _state = 3;
                return Environment.EAST;
            }
        }
        return Environment.NONE;
    }

    public int stepMazeMap()
    {
        return Environment.NONE;
    }

    public int stepDiamondMap()
    {
        return Environment.NONE;
    }

    public int stepStalactiteMap()
    {
        return Environment.NONE;
    }

    public int stepMap4()
    {
        return Environment.NONE;
    }

    public int stepMap5()
    {
        return Environment.NONE;
    }

    public int stepMap6()
    {
        return Environment.NONE;
    }	
}