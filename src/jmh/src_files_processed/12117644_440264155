public class Author
{
    private String name, address;
    private char gender;
    
    public Author (String authorName, String authorAddress, char authorGender)
    {
        name = authorName;
        address = authorAdress;
        gender = authorGender;
    }

    public String getName()
    {
        return name;
    }

    public String getAddress()
    {
        return address;
    }

    public char getGender()
    {
        return gender;
    }

    public String toString()
    {
        return name + ", " + address", " + gender;
    }
    
    public void setEmailAdress (String emailAddress)
    {
        address = emailAddress;
    }
}