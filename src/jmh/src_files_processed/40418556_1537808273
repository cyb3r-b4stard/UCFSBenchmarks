
/**
 * ##### # ########### ## ##### ############# ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class AnnualFuelUse
{
   private int fillUpNum;
   private int dayNum;
   private int startMiles;
   private int endMiles;
   private double gallonsUsed;
   private double pricePerGallon;
   
   private int distance;
   private double mpg;
   private double cost;
    
   AnnualFuelUse(int fillUp, int day, int sMiles, int eMiles, double gal, double prcPerGal)
   {
       fillUpNum = fillUp;
       dayNum = day;
       startMiles = sMiles;
       endMiles = eMiles;
       gallonsUsed = gal;
       pricePerGallon = prcPerGal;
   }
    
   public void calcDistance ()
   {
       distance = endMiles - startMiles;
   }
    
   public void calcMPG ()
   {
       mpg = distance / gallonsUsed;
   }
    
   public void calcCost ()
   {
       cost = gallonsUsed * pricePerGallon;
   }
   
   public int calcMaxDistance
   public int getFillUpNum ()
   {
       return fillUpNum;
   }
   
   public int getDay ()
   {
       return dayNum;
   }
   
   public int getStartMiles ()
   {
       return startMiles;
   }
   
   public int getEndMiles ()
   {
       return endMiles;
   }
   
   public double getGallonsUsed ()
   {
       return gallonsUsed;
   }
   
   public double getPricePerGallon ()
   {
       return pricePerGallon;
   }
   
   public int getDistance ()
   {
       return distance;
   }
   
   public double getMPG ()
   {
       return mpg;
   }
   
   public double getCost ()
   {
       return cost;
   }
}