import java.util.*;
public class Aplicatie {
    public static CasaDiscuri casa = CasaDiscuri.getInstance();
    public static Scanner s = new Scanner (System.in);
    
    public static void main (String [] args)throws Exception{
        String line = " ";
        new Thread(()->{
          while(true){
                System.out.println("Casa de discuri are" + casa.artisti.size() + " artisti");
                try{
                    Thread.sleep(120000);
                }catch (Exception e){
                    e.printStackTrace();
                }
          }   
        }).start();
        
        while (true){
            String line = s.nextLine ();
            String []v = line.split(" ");
            if ("adauga_artist".equals(v[0])){
                String nume = v[1];
                String genMuzical = v[2];
                int nrPersoane = Integer.parseInt (v[3]);
                int nrArtisti = casa.afiseazaNrArtisti();
            
            
              if(nrArtisti >= 10 ){
                throw new Exception ("PREA MULTI ARTISTI");
              }
            
              if("artistiSolo".equals(tip)){
                Artist a = new Solo (nrArtisti+1, denumire, pret);
                casa.adaugare(a);
              }else if ("artistiFormatie".equals(tip)){
                Artist a = new Formatie (nrArtisti+1, denumire, pret);
                casa.adaugare(a);
               }
           }else if ("afisare".equals(v[0]){
                casa.afisare();
            }else if ("exist".equals(v[0])){
                System.exit(0);
            }else if ("afisare_formatii".equals(v[0])){
                casa.afisareFormatie ();
            }else if ("sterge_artist".equals(v[0])){
                casa.stergeArtist(Integer.parseInt(v[1]));
            } else {
                System.out.println ("Nu exista comanda");
            }
        
        }         
}