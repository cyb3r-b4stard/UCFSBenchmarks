    public void bBonus3()
    {
        String guess = inputString("Final Jeopardy Question to double your score: What is the process of 'splitting a single parent cell into two identical daughter cells'?");
        if (guess.equalsIgnoreCase("Fission"))
        { score = score * 2;
            output("Right! Congrats!");
        }   
        else 
        { output("Wrong... You keep the same score.");
        }
        bBonus3.setVisible(false);
        dp = 1;
    }

