    public void actions(Object source,String command)
    {
        if (source == bScience)
        {   science(); }
        if (source == bScience2)
        {   science2(); }
        if (source == bScience3)
        {   science3(); }
        if (source == bScience4)
        {   science4(); }
        if (source == bScience5)
        {   science5(); }

        if (source == bHistory)
        {  history();  }
        if (source == bHistory2)
        {  history2();  }
        if (source == bHistory3)
        {  history3();  }
        if (source == bHistory4)
        {  history4();  }
        if (source == bHistory5)
        {  history5();  }

        if (source == bMath)
        {  math();  }
        if (source == bMath2)
        {  math2();  }
        if (source == bMath3)
        {  math3();  }
        if (source == bMath4)
        {  math4();  }
        if (source == bMath5)
        {  math5();  }

        if (source == bSports)
        {  sports();   }
        if (source == bSports2)
        {  sports2(); }
        if (source == bSports3)
        {  sports3(); }
        if (source == bSports4)
        {  sports4(); }
        if (source == bSports5)
        {  sports5(); }

        if (source == bBonus)
        {  bBonus(); }

        if (source == bBonus2)
        {  bBonus2(); }

        if (source == bBonus3)
        {  bBonus3(); }


        if (source == bPlayAgain)
        {  
            bScience.setVisible(true);
            bScience2.setVisible(true);
            bScience3.setVisible(true);
            bScience4.setVisible(true);
            bScience5.setVisible(true);

            bHistory.setVisible(true);
            bHistory2.setVisible(true);
            bHistory3.setVisible(true);
            bHistory4.setVisible(true);
            bHistory5.setVisible(true);

            bSports.setVisible(true);
            bSports2.setVisible(true);
            bSports3.setVisible(true);
            bSports4.setVisible(true);
            bSports5.setVisible(true);

            bMath.setVisible(true);
            bMath2.setVisible(true);
            bMath3.setVisible(true);
            bMath4.setVisible(true);
            bMath5.setVisible(true);

            bBonus.setVisible(true);
            bBonus2.setVisible(true);
            bBonus3.setVisible(true);
            bBonus4.setVisible(true);

            score = 0;
        }   
        tScore.setText(score + "");
    }

    public void science()
    {
        String guess = inputString("f = ma is a ________ law");
        if (guess.equals("physics") || guess.substring(0,2).equals("phy"))
        {
            score = score + 100*dp;
            output("Right!");  
        }
        else
        {  
            score = score - 100*dp;         
            output("Wrong..." ); 
        }      

        bScience.setVisible(false);
        dp = 1;
    }

    public void science2()
    {
        String guess = inputString("How many planets are in the solar system?");
        if (guess.equals("8") || (guess.equalsIgnoreCase("Eight")))
        {
            score = score + 200*dp;
            output("Right!");  
        }
        else
        {  
            score = score - 200*dp;         
            output("Wrong..." ); 
        }      

        bScience2.setVisible(false);
        dp = 1;
    }

