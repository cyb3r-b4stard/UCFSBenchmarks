    public void bBonus()
    {
        bBonus.setBackground(Color.pink);
        bBonus.setForeground(Color.red);

        String guess = inputString("Would you like to use your bonus on one question?");
        if (guess.equalsIgnoreCase("Yes"))
        {
            dp = 2;
        }
        else {
            output("Okay :(");
        }
        bBonus.setVisible(false);
    }

    public void bBonus2()
