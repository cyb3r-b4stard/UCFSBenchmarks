    /**
     * Create the Swing frame and its content.
     */
    private void makeFrame()
    {
        frame = new JFrame("Connect 4");
        makeMenuBar(frame);
        Container contentPane = frame.getContentPane();
        
        contentPane.setLayout(new BorderLayout());
        
        JPanel boardPanel = new JPanel();
        boardPanel.setLayout(new GridLayout(7,6));
        contentPane.add(boardPanel, BorderLayout.CENTER);
        
        createGrid(boardPanel);
        
        JPanel eastSidePanel = new JPanel();
        eastSidePanel.setLayout(new FlowLayout());
        eastSidePanel.setOpaque(true);
        eastSidePanel.setBackground(Color.BLUE);
        
        JPanel eastContentPanel = new JPanel();
        eastContentPanel.setLayout(new GridLayout());
        contentPane.add(eastSidePanel, BorderLayout.EAST);
        eastSidePanel.add(eastContentPanel);
        
        JButton button = new JButton("Press Me");
        eastContentPanel.add(button);
        
        frame.pack();
        frame.setVisible(true);
    }
    
    /**
     * Create the main frme's menu bar.
     * @param frame The frame the menu bar should be added to.
     */
    private void makeMenuBar(JFrame frame)
    {
        JMenuBar menubar = new JMenuBar();
        frame.setJMenuBar(menubar);
        
        JMenu fileMenu = new JMenu("File");
        menubar.add(fileMenu);
        
        JMenuItem openItem = new JMenuItem("Open");
            openItem.addActionListener(new ActionListener() {
                                public void actionPerformed(ActionEvent e) {  }
                            });
        fileMenu.add(openItem);
        
        JMenuItem quitItem = new JMenuItem("Quit");
        fileMenu.add(quitItem);
    }
    
