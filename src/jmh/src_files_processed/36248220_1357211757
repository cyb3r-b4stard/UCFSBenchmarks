public class WeatherConditionals
{
    public static String getWeatherAdvice(int temperature, String description){
       boolean cant = false;
       String result = " ";
       if (description.contains("windy"))  {
           cant = true;
        }
       if (temperature < 31)  {
           cant = true;
        }
       if (description.contains("snow"))   {
          if (temperature > 100)  {
          result = "what?! snowing and over 100?!?!" ;
        }
        }
       if (cant == true)  {
           cant = true;
           result = "Too windy or cold! Enjoy watching the weather through the window.";
        }
       else if (result == " ")  {
           result = "It's safe to go outside, " + temperature + " degrees and " + description + ".";
           
           
        }
       return(result);
        
       
        
    }
