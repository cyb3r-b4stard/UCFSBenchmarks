import java.util.Scanner;
public class BookDriver
{
    Scanner scan = new Scanner(System.in);

    final int SIZE = 3;

    Book[] mainBooks;

    Book books;


    public BookDriver()
    {

        mainBooks = new Book[SIZE];
        
    }
    public void makeBooks()
    {
        String bookAns;
        double bookPrice;

        for(int i = 0; i < SIZE ; i++)
        {
            System.out.println("Please enter the title for book number " + (i+1));
            bookAns = scan.nextLine();

            System.out.println("Please enter the price for book number " + (i+1));
            bookPrice = scan.nextInt();
            scan.nextLine();

            books = new Book(bookAns, bookPrice);

            mainBooks[i] = books;
        }
    }

    public double average()
    {

        double total = 0;

        for(int i = 0; i < SIZE; i++)
        {
            total = total + mainBooks[i].getPrice();

        }

        double average = (total/SIZE);

        return average;

    }
    
    public static void main(String []args)
    {
        BookDriver driver = new BookDriver();
        driver.makeBooks();
        for(int i = 0; i < SIZE; i++)
        {
            driver[i].display();
        }
            

}