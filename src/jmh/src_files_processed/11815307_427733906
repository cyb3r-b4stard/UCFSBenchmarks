public class PEProblem4
{
    public boolean isPalindrome(long num)
    {
        Long l = new Long(num);
        String myNum = l.toString();
        if(myNum.length()==1) return true;
        else
        {
            if(myNum.charAt(0)==myNum.charAt(myNum.length()-1))
            {
                String shorter = myNum.substring(myNum.charAt(1), myNum.length()-2));
                Long shorterNum = new Long(shorter);
                isPalindrome(shorterNum);
            }
            else return false;
        }
        return false;
    }

    public void findLargestPalindrome(long numTested)
    {
        for(int i=999; i>0; i--)
        {
            if(isPalindrome(i*numTested)) System.out.println(i*numTested);
            else findLargestPalindrome(numTested-1);
        }
    }

    public static void main(String[] args)
    {
        PEProblem4 p4 = new PEProblem4();
        p4.findLargestPalindrome(999);
    }
}