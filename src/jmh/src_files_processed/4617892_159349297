import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.Line2D;
import javax.swing.JComponent;

public class HouseComponent extends JComponent
{
    public void paintComponent(Graphics g){
        Graphics2D g2 = (Graphics2D) g;
        
        Line2D.Double hside = new Line2D.Double(30, 125, 115, 125);
        g2.draw(hside);
        Line2D.Double hside2 = new Line2D.Double(115, 65, 115, 125);
        g2.draw(hside2);
        Line2D.Double hside3 = new Line2D.Double(30, 65, 30, 125);
        g2.draw(hside3);
        Line2D.Double hside4 = new Line2D.Double(30, 65, 115, 65);
        g2.draw(hside4);
        Line2D.Double rside1 = new Line2D.Double(30, 65, 72.5, 45);
        g2.draw(rside1);
        Line2D.Double rside2 = new Line2D.Double(72.5, 45, 115, 65);
        g2.draw(rside2);
        Line2D.Double dside1 = new Line2D.Double(68.5, 125, 68.5, 110);
        g2.draw(dside1);
        Line2D.Double dside2 = new Line2D.Double(76.5, 125, 76.5, 110);
        g2.draw(dside2);
        Line2D.Double dside3 = new Line2D.Double(68.5, 110, 76.5, 110);
        g2.draw(dside3);
        Rectangle window1 = new Rectangle(40, 80, 10, 10)
        g2.draw(window1);
 
        
    }
}