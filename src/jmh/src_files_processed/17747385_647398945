 */
public class Person
{
import java.util.*;
public class Person
{
    private String firstName;
    private String lastName;
    private char Sex;
    private int num;
    private Preference pref;
    ArrayList <Preference> likes= new ArrayList <Preference>();
    ArrayList <Preference> dislikes= new ArrayList <Preference>();

/**
 * Constructor for person class
 * @param firstName first name of the person lastName last name of the person,Sex whether the person is male or female
 */
public Person(String firstName,String lastName,char sex)
{
    this.firstName=firstName;
    this.lastName=lastName;
    this.Sex=Sex;
}


 public String getLastname(){ 
   return this.lastName;
}


   public String getFirstName(){ 
   return this.firstName;
}



   public char getSex(){ 
   return this.Sex;
}


 public void addPreference(Preference pref,int num){ 
     if(num==1){
         if((!likes.contains(pref)&& (!dislikes.contains(pref)))){
        likes.add(pref);
    }
}
   else if (num==-1){
        if ((!dislikes.contains(pref))&&(!likes.contains(pref))){
            dislikes.add(pref);
    }
}
}

    
         

 public void removePreference(Preference pref){
    
if (dislikes.contains(pref)){
dislikes.remove(pref);}
if (likes.contains(pref)){
likes.remove(pref); 
}
}




 public String toString()
 {
return ("First Name:\t"+this.firstName+"\n Last Name:\t"+this.lastName+"\n LIKES:\t"+likes+"\n DISLIKES:\t"+dislikes);
}



public int howDoYouLike(Preference pref){
{
byte a=1;
byte b=-1;
byte c=0;
if (dislikes.contains(pref)){
    return b;
}
else if (likes.contains(pref)){
    return a;
}
return c;
}
}



public int compatibility(Person stranger)
{
    int score;
    int like_dislike;
    int numberOfCommonDislikes=0;
    int numberOfCommonLikes=0;
    int numberOfDisagreements=0;
  
    for (int y=0;y<likes.size();y++){
        like_dislike=stranger.howDoYouLike(likes.get(y));
        if (like_dislike==-1){
            numberOfDisagreements++;
        }
        if(like_dislike==1){
            numberOfCommonLikes++;
        }
    } 
    for (int y=0;y<dislikes.size();y++){
        like_dislike=stranger.howDoYouLike(dislikes.get(y));
        if (like_dislike==1){
            numberOfDisagreements++;
        }
        if(like_dislike==-1){
            numberOfCommonDislikes++;
        }
    }
    score=numberOfCommonLikes+numberOfCommonDislikes-numberOfDisagreements;
    return score;
}
     
   
}

}