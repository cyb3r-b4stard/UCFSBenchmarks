
/**
 * ### ############ ##### ########## # ####### ##### ####### ### #
 * ########-##### ## #### #####. ### ##### ##### ##### ### #######. ### 
 * ##### ## ### ##### ## ##:## (########) ## ##:## (### ###### ###### 
 * ########).
 * 
 * ### ##### ####### ######## "#####" (### ### ###### ######) ##### ######
 * ### ###### ## ############## ### #######. #### ## #### ## ### ##### #####
 * #######: ### #### ############ #### ### ####### #### #### ## ####.
 * 
 * @###### ####### ####### ### ##### #. ######
 * @####### ####.##.##
 */
public class VisorDeReloj
{
    private VisorDeNumeros horas;
    private VisorDeNumeros minutos;
    private String cadVisor;    
    
    /**
     * Constructor for VisorDeReloj objects. This constructor 
     * creates a new clock set at 00:00.
     */
    public VisorDeReloj()
    {
        horas = new VisorDeNumeros(24);
        minutos = new VisorDeNumeros(60);
        actualizarVisor();
    }

    /**
     * Constructor for VisorDeReloj objects. This constructor
     * creates a new clock set at the time specified by the 
     * parameters.
     */
    public VisorDeReloj(int hora, int minuto)
    {
        horas = new VisorDeNumeros(24);
        minutos = new VisorDeNumeros(60);
        ponerEnHora(hora, minuto);
    }

    /**
     * This method should get called once every minuto - it makes
     * the clock display go one minuto forward.
     */
    public void ticTac()
    {
        minutos.incrementar();
        if(minutos.getValor() == 0) {  
            horas.incrementar();
        }
        actualizarVisor();
    }

    /**
     * Set the time of the display to the specified hora and
     * minuto.
     */
    public void ponerEnHora(int hora, int minuto)
    {
        horas.setValor(hora);
        minutos.setValor(minuto);
        actualizarVisor();
    }

    /**
     * Return the current time of this display in the format HH:MM.
     */
    public String getHora()
    {
        return cadVisor;
    }
    
    /**
     * Update the internal string that represents the display.
     */
    private void actualizarVisor()
    {
        if ((int)horas.getValorDelVisor())>12)
            cadVisor = horas.getValorDelVisor()-12 + ":" + 
                        minutos.getValorDelVisor()+" pm";
    }
}