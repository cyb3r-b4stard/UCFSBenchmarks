/**
 * ########-- ########## #
 * @###### ######### ######
 * @####### #.#.#
 */
public class Vehicle
{
    private String stockCode;
    private String make;
    private String model;
    private int year;
    private double dealerCost;
    private double sellingPrice;
    private double profitMargin;
    
   
    /** 
     * Constructor of class Vehicle; there are four parameters
     * @param _stockCode Integer, The stock code of the car.
     * @param _make String,The make of the car.
     * @param _model Integer, The model of the car. 
     * @param _year Integer, The year of the car. 
     * 
     */
    
   public Vehicle()
   {
       stockCode = "NYSE";
       make = "Ferrari";
       model = "V8";
       year = 2015;
    }
   
   
   public Vehicle(String _stockCode, String _make, String _model, int _year)
    {
        if (_stockCode == null)               
            {stockCode = "NYSE";}        
        else                               
            {stockCode = _stockCode;}
        if (_make == null)               
            {make = "Ferrari";}                  
        else                               
            {make = _make;}
        if (_model == null)               
            {model = "V8";}                 
        else                                
            {model = _model;}
       
        
        if (_year < 2016 && _year > 1970)     
        {
            year = _year;                   
        }
        else 
        {
            year = 2015;                   
        }
    
    }
   
    
       /**
     * Accessor method for returning stock code. 
     * @return The stock code
     */
   public String getStockCode() 
   {
       return stockCode;
    }
    
           /**
     * Accessor method for returning model of the car. 
     * @return The model of the car
     */
    public String getModel() 
   {
       return model;
    }
    
           /**
     * Accessor method for returning the make of the car
     * @return The make of the car
     */
    public String getMake() 
   {
       return make;
    }
    
           /**
     * Accessor method for returning the year of manufacture. 
     * @return The year of manufacture
     */
    public int getYear() 
   {
       return year;
    }
   
   /**
     * Mutator method that sets the stock code. 
     * @param stock_code The stockcode of the car
     */
   public void setStockCode(String stock_code) 
   {
       if (stock_code == null )               
            {System.out.println("ERROR: Please enter the correct value");}  
        else                               
            {stockCode = stock_code;}
    }
    
   public void setMake(String make_)
   {
       if (make_ == null )               
            {System.out.println("ERROR: Please enter the correct value");}  
        else                               
            {make = make_;}
    }
    
   public void setModel(String model_)
   {
       if (model_ == null )               
            {System.out.println("ERROR: Please enter the correct value");}  
        else                               
            {model = model_;}
    }
   
   public void setYear(int year_)
   {
       if (year_ < 2016 && year_ > 1970)     
        {year = year_;}                  
        else 
        {System.out.println("ERROR: Please enter a year between 1970 and 2016");}  
    }
    
   public void setDealerCost(double data_type)
   {
       if (data_type >= 0)     
        {dealerCost = data_type;}                  
        else 
        {System.out.println("ERROR: Please enter a positive value or zero");}  
    }
   
   public void checkStandardSellingPrice(double data_type)
   {
      if (data_type >= 1.25 * dealerCost)
      {sellingPrice = data_type;}
      else
      {System.out.println("Selling Price " + sellingPrice "is not 25% higher than dealer cost" + dealer_cost)}
    }
    
   public void calculateProfitMargin()
   {
       profitMargin = (sellingPrice - dealerCost) / sellingPrice;
    }
    
   public void printDetails()
   {
    }
}  
   
   