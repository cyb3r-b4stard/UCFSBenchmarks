import java.util.Random;
/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Dobbelen
{
    private int ogen;
    Random getal;


    /**
     * Constructor for objects of class Dobbelen
     */
    public Dobbelen(int 15);
    {
        ogen = new int 15;
        getal = new Random();
    }
    public void dobbelsteenWerpen()
    {
        int h = 0;
        while(h<100)
        {
            int a = getal.nextInt(6)+1;
            int b = getal.nextInt(6)+1;
            int c = getal.nextInt(6)+1;
            
            int t = a+b+c;
            
            int i =0;
            while(i < ogen.Length)
            {
                if( i+3 == t)
                {
                    ogen[i] = ogen[i] + 1;
                }
                i++;
            }
        }
    }
    
    public void PrintResultaat()
    {
        System.out.println("");
        System.out.println("ogen : Aantal keer");
        for(int i=0; i<ogen.length;i++)
        {
            System.out.println(i+3 + " : " + ogen[i] + "aantal keer geworpen");
        }
    }
}
 