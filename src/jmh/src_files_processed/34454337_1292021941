
/**
 * ########### ########## #
 * ####### ### #### ######### ###### ########
 * @###### ####### ####
 * @####### #/#/####
 */
public class SalesPerson
{
    private String name;
    private int employeeId;
    private double commissionRate;
    private double sales;

    /**
     * Constructor for objects of class SalesPerson
     */
    public SalesPerson(String name, int employeeId)
    {
        this.name = name;
        this.employeeId = employeeId;
        commissionRate = 0;
        sales = 0;
    }

    /**
     * Methods
     */
    
    public void setSalesAmount(double salesAmount)
    {
        sales = salesAmount;
    }
    public void setCommissionRate(double commissionRate)
    {
        if (commissionRate >= 0 && commissionRate <= .15) {
        this.commissionRate = commissionRate;
        } else {
        System.out.println("Valid commission rates are between 0 and 15%. Please enter a decimal between 0 and .15");
        }
    }
    public double calcCommission()
    {
        commission double;
        if (sales <= 10000) {
        commission = commissionRate * sales;
        System.out.println("Commission: " + commission);
        } else if (sales > 10000) {
        firstCommission = 10000 * commissionRate;
        overSales = sales - 10000;
        secondCommission = overSales * 2 * commissionRate;
        commission = firstCommission + secondCommission;
        } else {
        System.out.println("Error. Invalid sales amount or commission rate.");
        }
    }
}