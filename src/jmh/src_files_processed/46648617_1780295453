
import sum.kern.*;
/**
 * @###### 
 * @####### 
 */
public class Tisch
{
    private Stift derStift;
    int zlinkerRand;
    int zrechterRand;
    int zobererRand; 
    int zuntererRand; 
    int zBreite; 
    int zHoehe; 
    int phPos;
    int pvPos;
    int pBreite;
    int pHoehe;
    int pBildschirm;
    pBildschirm = Bildschirm
    public Tisch (Bildschirm pBildschirm)
    {
       derStift = new Buntstift();
       zlinkerRand = phPos;
       zrechterRand = zlinkerRand + this.zBreite;
       zobererRand = pvPos;
       zuntererRand = zobererRand + this.zHoehe;
       
       zBreite = pBreite;
       zHoehe = pHoehe;
       
    }

    public void Tisch()
    {
        derStift.bewegeBis(zlinkerRand,zobererRand);
        derStift.runter();
        derStift.zeichneRechteck(zBreite,zHoehe);
    } 
    
    public double linkerRand()
    { 
        return this.zlinkerRand;
    }
    
    public double rechterRand()
    {
        return this.zrechterRand;
    }
    
    public double obererRand()
    {
        return this.zobererRand;
    }
    
    public double untererRand()
    {
        return this.zuntererRand;
    }
    
    public void gibFrei() 
    {
        derStift.gibFrei();
    }
    
    
}