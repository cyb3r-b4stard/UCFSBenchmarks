
public class BallRunner
{

    public BallRunner(BallWorld ballWorld, TGPoint entrancePoint, int ballBotArray)
    { 
   

    }
    public double distanceBetweenPoints (TGPoint point1, TGPoint point2){
double xdif = point1.x-point2.x;
double ydif = point1.y-point2.y;
}
public boolean entranceClear(){}
    public static void run(){
        BallBot[] ballBotArray = new BallBot[40];
        BallWorld ballWorld = new BallWorld (500, 500); 
        TGPoint startPoint = new TGPoint (5, 7);

        for (int i=0; i < ballBotArray.length; i ++){
            ballBotArray[i] = new BallBot (ballWorld, startPoint, (int) (Math.random()*360), (int) (Math.random()*30));
            ballBotArray[i].setColor((int) (Math.random()*(3000)));
            ballBotArray[i].setPixelsPerSecond((int) (Math.random()*(200)));
        }

        while (true){
            for(int i=0; i < ballBotArray.length; i ++){
                if (ballBotArray[i].canMoveForward(ballWorld)){
                    ballBotArray[i].moveForward();
                
                }else{
                    ballBotArray[i].setHeading(ballBotArray[i].getHeading()+(Math.random()*180));
                  
                }
            }
        }
    }
}
}

    