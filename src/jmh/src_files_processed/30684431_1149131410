import sum.kern.*;
import sum.werkzeuge.*;
/**
 * @###### ###########
 * @####### ########
 */
public class Wolf
{
    Buntstift hatStift;
    Rechner hatRechner;
    Bildschirm kenntBildschirm;
    
    
    public Wolf(Bildschirm pBildschirm)
    {
      hatStift = new Buntstift();
      hatRechner = new Rechner();
      kenntBildschirm = pBildschirm;
      hatStift.bewegeBis(hatRechner.ganzeZufallszahl(0,kenntBildschirm.breite()), hatRechner.ganzeZufallszahl(0,kenntBildschirm.hoehe()));
      hatStift.runter();
    }

    /**
     * Der Wolf wird freigegeben
     */
    public void gibFrei()
    {
        hatStift.gibFrei();
        hatRechner.gibFrei();
    }
    
    /**
     * Der Wolf bewegt sich
     */
    public void bewege()
    {
        
    }
    
    /**
     * Der Wolf gibt zur端ck, ob er am linken Rand angekommen ist
     * @return true wenn der Wolf am linken Rand angekommen ist
     */
    public boolean amLinkenRand()
    {  
    return true hatStift.(0,kenntBildschirm.breite());
    }
    
    /**
     * Der Wolf gibt zur端ck, ob er am rechten Rand angekommen ist
     * @return true wenn der Wolf am rechten Rand angekommen ist
     */
    public boolean amRechtenRand()
    {

    }
    
    /**
     * Der Wolf gibt zur端ck, ob er am oberen Rand angekommen ist
     * @return true wenn der Wolf am oberen Rand angekommen ist
     */
    public boolean amOberenRand()
    {
    
    }
    
    /**
     * Der Wolf gibt zur端ck, ob er am unteren Rand angekommen ist
