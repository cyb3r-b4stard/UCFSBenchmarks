public class Traject
{
    public String transportMiddel;
    public String vertrekPunt;
    public String eindPunt;
    public float prijsRit;
    public boolean korting;
    public Traject(String soort,String van, String naar, float kost)
    {
    vertrekPunt= van;
    eindPunt=naar;
    prijsRit=kost;
    transportMiddel=soort;
    korting=false;
    }
    public float gebruik()
    {
        if(korting=true)
     {
     prijsRit=prijsRit/2;
     }
        
        return prijsRit;
        System.out.println;
    
    }
    public void setKorting(boolean afslaggekregen)
    {
    korting=afslaggekregen;
    }
    public String getTransportmiddel()
    {
        return transportMiddel;
    }
 
}