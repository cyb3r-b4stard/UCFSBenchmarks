import java.util.*;


public class Circle {
    public static void main(String[]args)
    {
        Scanner keyboardIn = new Scanner(System.in);
        
        double PI;
        double area;
        double circumference;
        double radius;
        
        PI =3.14159;
        
               
       System.out.print(" Please enter a value for radius: ");
       radius = keyboardIn.nextInt();
        
       System.out.print(" The area of the circle with a radius of " + +radius + " is " + (PI*(radius*radius)) + " to 2 d.p. ");
       System.out.print(" The circumference of the circle is " + (PI*(radius+radius)); 
    }
}
        
        