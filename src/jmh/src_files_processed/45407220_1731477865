
public class Fach
{
    private String name;
    private int[] noten;
    private int anzahlNoten;
    private int besteNote;
    private int schlechtestenote;
    

    public Fach(String name)
    {
        this.name = name; 
        noten = new int[10];
        anzahlNoten = 0;
    }

    public String getName()
    {
        return name;
    }

    public int getAnzahlNoten()
    {
        return anzahlNoten;
    }


    public boolean addNote(int note)
    {
        if((note>=1 && note<=6) && (anzahlNoten<noten.length))
        {
            noten[anzahlNoten]=note;
            anzahlNoten++;
            return true;
        }
        else
        {
            return false;
        }
    }

    public double getDurchschnitt()
    {
        if(anzahlNoten==0)
        {
            return 0.0;
        }
        double notensumme=0.0;
        for(int i=0;i<anzahlNoten;i++)
        {
            notensumme=notensumme+noten[i];
        }
        return notensumme/anzahlNoten;
    }
    

    
    public int getBasteNote()
    {
       besteNote = noten;
       noten = new int[1],2,3,4,5,6];
       for (int i=1; i<noten.length; i++){
       return noten;
    }
    }

}