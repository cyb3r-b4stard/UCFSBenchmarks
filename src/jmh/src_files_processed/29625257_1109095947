/**######### ## ######*/
import java.util.*;
public class Ejercicio113
    {
        public static void main(String args[])
        {
            Scanner sc=new Scanner (System.in);
            System.out.println("Introduzca la dimension de la matriz");
            int m=sc.nextInt();
            int matriz[][]=new int[m][m];
            int q=0;
            int k=1;            
            while(m<=0)
            {
                System.out.println("Introduzca un numero mayor a 0");
                m=sc.nextInt();
            }
            for(int i=0;i<matriz.length;i++)
            {
                q=matriz.length;
                k=1;
                for(int j=0;j<matriz.length;j++)
                {
                    if(i==0 && j==0)
                    {
                        matriz[i][j]=1;
                    }             
                    else if(i==0)
                    {
                        m[i][j]=m[i][j-1]+k;
                        k++;
                    }
                    else if(j==matriz.length-1)
                    {
                        matriz[i][j]=matriz[i-1][j]+q;
                    }
                    else if(j==matriz.length-1 && i=matriz.length-1)
                    {
                        matriz[i][j]=matriz.length*2;
                    }
                    else matriz[i][j]=matriz[i-1][j+1]+1;
                }
                q--;
            }
            impresion(matriz);
        }
        public static void impresion(int matriz[][])
        {
            for(int i=0;i<matriz.length;i++)
            {
                for(int j=0;j<matriz[0].length;j++)
                {
                    System.out.print(matriz[i][j] +" ");
                }
                System.out.println();
            }
        }
    }