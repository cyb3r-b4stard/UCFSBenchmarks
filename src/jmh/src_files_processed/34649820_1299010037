package CampingStart;

public class Place 
{
    private String code;
    private int maxNrPersons;
    private boolean[] reservation;

    public Place(String AccCode, int maxCapacity)
    {
        code = AccCode;
        maxNrPersons = maxCapacity;
        reservation = new boolean[153];
        for(int i = 0; i < 153; i++) 
        {
            reservation[i] = false;
        }
    }

    public String getCode()
    {
        return code;
    }

    public void setCode(String code)
    {
        this.code = code;
    }

    public int getMaxNrPersons()
    {
        return maxNrPersons;
    }

    public void setMaxNrPersons(int maxNrPersons)
    {
        this.maxNrPersons = maxNrPersons;
    }

    public boolean isFree(int startDay, int endDay) 
    {
        boolean isFree = true;
        if(startDay>=0 && endDay <=153) {
            for(int i = startDay; i <= endDay; i++)  {
                if(reservation[i] == true)  {
                    return false;
                }
            }
        }
        else {
            return false;
        }
        return isFree;
    }

    public void makeReservation(int startDay, int endDay)
    {
        for(int i = startDay; i <= endDay; i++)  
        {
            reservation[i] = true);
        }
    }
}