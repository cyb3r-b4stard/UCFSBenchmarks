public class Word
{
    private String text;

    /**
    Constructs a word.
    @param text the characters in this word
     */
    public Word(String text)
    {
        this.text = text;
    }

    /**
    Tests whether a letter is a vowel
    @param letter a string of length 1
    @return true if letter is a vowel
     */
    public boolean isVowel(String letter)
    {
        return "aeiouy".contains(letter.toLowerCase());
    }

    public int countVowels()
    {
        int i = 0;
        int counter = 0;
      
            while (i < text.length())
            {
                i++; 
                String letter = text.substring(i-1,i); 
                if(isVowel(letter))
                    {

                        counter++; 
                      
                    }
                
            }
        return counter; 
        }
   

    public int countVowelGroups()
    {
        int i = 0; 
        int counter = 0; 
        for(i=0;i<text.length(); i++)
        {
             String letter = text.substring(i,i+1); 
             if(!isVowel(letter))
             {
                 counter++; 
                 if (isVowel(letter+1,letter+2)
                 {
                     counter++; 
                    }
                 /**
                 counter;
                 for(int j=0; j<text.length(); j++)
                 {
               
                    if(!isVowel(letter))
                    {
                       letter = text.substring(j-1);
                       counter++;  
                    }
                   
                 }
                 */
                     
                 
                
                
           
                }
            
        }
        return counter; 
    }

    public String toString()
    {
        return text;
    }
}