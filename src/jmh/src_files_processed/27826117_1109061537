
public class Waldding{
    private int xPos;
    private int yPos;
    private double vx;
    provate double vy;
    
        public Waldding(){
            xPos=0;
            yPos=0;
        }
        
        public void animate(){
            verschieben( (int)vx , (int) vy );
        }
        
        public int getAbstand(Waldding Partner){
            int x1 = xPos;
            int y1 = yPos;
            int x2 = Partner.getXPos();
            int y2 = Partner.getYPos();
            
            int d = (int) Math.sqrt ((x2-x1)*(x2-x1) + (y2-y1)*(y2-y1));
            
            return d;
        }
        
        public int getXPos(){
            return xPos;
        }
        
        public int getYPos(){
            return yPos;
        }
        
        public void verschieben(int dx, int dy){
            xPos = xPos + dx;
            yPos = yPos + dy;    
        }
}