
public class MyMath
{
    /**
     * Calculates the mean of four doubles
     *
     * @param arg1 first number
     * @param arg2 second number
     * @param arg3 third number
     * @param arg4 fourth number
     * @return Returns the average value of all the numbers
     */
    public static double mean4(double a, double b, double c, double d)
    { double sum; 
        sum = a + b + c + d;
        return sum /4; 

    }
    /**
     * Returns the minimum of three doubles entered
     *
     * @param arg1 first number
     * @param arg2 second number
     * @param arg3 third number
     * @return Returns the number with the lowest value of three entered
     */
    public static int min(int a, int b, int c)
    {   int minimum;
        if ( a < b ) 

        { minimum = a;
        }

        else
        { minimum = b;
        }

        if ( c < minimum )
        { minimum = c ;
        }
        else
        { minimum = minimum;
        }

        return minimum;

    }

    /**
     * Returns the double minimum of three doubles entered
     *
     * @param arg1 first decimal number
     * @param arg2 second decimal number
     * @param arg3 third decimal number
     * @return Returns the number with the lowest value of three decimals entered
     */
    public static double doubleMin(double a, double b, double c)
    {   double doubleMinimum;
        if ( a < b ) 

        { doubleMinimum = a;
        }

        else
        { doubleMinimum = b;
        }

        if ( c < doubleMinimum )
        { doubleMinimum = c ;
        }
        else
        { doubleMinimum = doubleMinimum;
        }

        return doubleMinimum;

    }

    /**
     * Calculate n factorial (n!) where n <= 20.
     * @param n the argument whose factorial is required
     * @return the factorial of the argument
     */
    public static long factorial(int n)
    {
        long result = 1;
        int counter = 2;
        while (counter <= n)
        {
            result = result * counter;
            counter++;
        }
        return result;
    }
    
    /*
     * Calculate binomial co-efficients of two intergers
     * @param n is the first interger
     * @param k is the second interger
     * @return Returns the binomial co-efficient of the interger n (n choose k)
     */
    public static long biCoeff(int n, int k)
    {
       bi = factorial(n)/factorial(k)/factorial(n-k);
       
       return bi;
       
   
   
}