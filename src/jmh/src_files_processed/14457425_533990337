import java.util.Random;
import java.util.Scanner;

public class JMBArrays
{
  public static void main(String [] args)
  {
    int [] x= new int [30];
    double avg=0;
    Random num= new Random();
    for (int i=0; i<30; i++)
    {
        x[i]=num.nextInt(5)+1;
        System.out.println(x[i]);
        avg+=x[i];
    }
    System.out.println(avg/x.length);
    
    String [] names= new String[5];
    Scanner reader= new Scanner(System.in);
    System.out.println("Enter 5 names: ");
    for(int i=0; i<5; i++)
    {
        names[i]=reader.nextLine();   
    }
     System.out.println("The names u entered are: ");
    for(int i=0; i<5;i++)
        System.out.println(names[i]);
    String search =" ";
    System.out.println("Search for a name: ");
    search=reader.nextLine();
    boolean condition=true;
    
    for(int i=0; i<5; i++)
    {
       
        
        if(names[i].equals(search))
        {
            System.out.println(search+" is in index " + i);
            condition=true; 
        }   
       
        System.out.println("The name you are searching for is not on the list.");
             break;
    }
     
    JMBSuperHero s1[]= new JMBSuperHero([3]);
    String s1=new String [3];
    JMBSuperHero[0].setSuperPower("Crazy");
    
   
  }
}