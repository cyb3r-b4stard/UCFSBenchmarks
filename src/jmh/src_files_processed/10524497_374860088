import java.util.ArrayList;
import java.util.Collection;
import java.util.HashMap;

public class ShoppingList
{
    private String name;
    private ArrayList<Member> members; 
    private HashMap<String, Item> items;

    /**
     * Constructor for objects of class ShoppingList
     */
    public ShoppingList(String name)
    {
        this.name = name;
        members = new ArrayList<Member>();
        items = new HashMap<String, Item>();
    }

    public void addANewItemToBuy(String itemName, double pricePerUnit, int quantity){
        Item itemToBuy = new Item(itemName, pricePerUnit, quantity);
        items.put(itemName, itemToBuy);
        for(Member m : members){                   
            m.notifyNewItemToBuy(name, itemToBuy); 
        }
    }
    
    public void updateAnItem(String itemName){
        Item itemToBuy = items.get(itemName);
        Item itemToBuy.status = true;
    }
    
    public void removeAnItem(String itemName){
    }
    
    public void addAMember(Member member){
        members.add(member);
    }
    
    public void removeAMember(Member member){
        members.remove(member);
    }
    
    public void printMembers() {
        System.out.print("The members are: ");
    }
    
    public void printItems() {
        System.out.print("The items are: ");
    }

}