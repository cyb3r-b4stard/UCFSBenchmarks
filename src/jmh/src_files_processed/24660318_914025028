ppublic class BasculeBridge
{
   private int slope;
   public final static int MIN_GRADE=0;
   public final static int MAX_GRADE=60;
   
    /**
    * Constructor con parámetros que recibe como parámetro la inclinación del puente
    * 
    * @param slope, de tipo int
    */
   public BasculeBridge(int slope)
   {
       setSlope(slope);
    }
    
     /**
    * Nos devuelve la posición actual del puente
    * 
    * @return posición del puente, de tipo int
    */
   public int getSlope()
   {
       return slope;
    }
    
    /**
    * Nos permite cambiar la posición actual del puente
    * 
    * @param posición del puente, de tipo int
    */
   private void setSlope(int slope)
   {
    if(getSlope()>= 60)
    this.slope = 60;
    else if(getSlope () <= 0)
    this.slope = 0;
    {
       this.slope = slope;
    }
   }

    /**
     * modifica  la  posición  del  puente,  incrementándola  en  la  cantidad  que 
     * recibe como parámetro. Sólo podrá recibir valores positivos. 
     * 
     * @param nueva posición del puente, de tipo int
     */
   public void raiseBridge(int slope)
    {   
        if (slope >= 0)
        if ((getSlope() + slope) > MAX_GRADE)
        setSlope(60);
        else
        setSlope(getSlope() + slope);
    }
       
    /**
     * modifica  la  posición  del  puente,  decrementándola  en  la  cantidad  que 
     * recibe como parámetro. Sólo podrá recibir valores positivos. 
     * 
     * @param nueva posición del puente, de tipo int
     */
   public void dropBridge(int slope)
    {   
        if (slope >= 0)
        if ((getSlope() - slope) <= MIN_GRADE)
        setSlope(0);
        else
        {
        setSlope(getSlope() - slope);
        }
   }
}