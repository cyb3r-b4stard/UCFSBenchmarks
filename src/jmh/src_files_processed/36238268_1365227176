public class Class1
    {
    public static void main(String[] args)
        { 
          String title = ("Intro to Programming in Java");
          System.out.println(title.toUpperCase());
          System.out.println(title);
          System.out.println(title.toLowerCase());
          String whatyouare = ("a faget:");
          System.out.println(whatyouare);
          System.out.println(whatyouare.replace("faget", "god");
        }
    }