     static void maMaison()
    
    { 
        String ciel;
        ciel = dessine("ciel");
        output.println(ciel);
        String soleil;
        soleil = dessine("soleil");
        output.println(soleil);
        String nuage;
        nuage = dessine("nuage");
        output.println(nuage);
        String sol;
        sol = dessine("sol");
        output.println(sol);
        String maison;
        maison = dessine("maison");
        output.println(maison);
        String arbreDerrière;
        arbreDerrière = dessine("arbre derrière");
        output.println(arbreDerrière);
        String arbreDevant;
        arbreDevant = dessine("arbre devant");
        output.println(arbreDevant);
        String texte;
        texte = dessine("texte");
        output.println(texte);
       
    }

    static void monAutreMaison()
    {
        dessineCiel();
        dessineSol();
        dessineNuage();
        dessineSoleil(480,20);
        dessineMaison(110,60);
        dessineArbre(390,60);
        dessineTexte(25,320);
    }
    
    static void maison2() 
    {
        dessine("ciel");
        dessineSoleil(480,20);
        dessine("sol");
        dessine("nuage");
        dessineMaison(110,60);
        dessineArbre(390,60);
        dessineTexte(25,320);
    }
    
     static void moyenne(String etudiant, double note1, double note2, int max) 
     {
        double m = (note1 + note2) / 2.0;
        output.println(etudiant + " : " + m + " sur " + max);
     }
     static void moyenne() 
     {
        moyenne("Bart Simpson", 0., 5., 20);
        moyenne("Homer Simpson", 10., 25., 100);
        moyenne("Lisa Simpson", 15., 14.75, 15);
     }
     
     static String prix(String article, double prixKilo, double poidsGramme) 
     {
        double res = prixKilo * poidsGramme / 1000;
        return article + " : " + res + " euros";
     }
     
     static void prix()
     {
         String prixTruffes;
         prixTruffes = prix("truffes", 250, 750);
         output.println(prixTruffes);
         String prixCaviar;
         prixCaviar = prix("caviar", 3500, 50);
         output.println(prixCaviar);
         String prixFoieGras;
         prixFoieGras = prix("foieGras", 230, 230);
         output.println(prixFoieGras);
     }
    
      static void prix2()
     {
         String prixArticle;
         prixArticle = prix("truffes", 250, 750);
         output.println(prixArticle);
         prixArticle = prix("caviar", 3500, 50);
         output.println(prixArticle);
         prixArticle = prix("foieGras", 230, 230);
      
     }
    
     static void prix3()
     {
         output.println(prix("truffes", 250, 750));
         output.println(prix("caviar", 3500, 50));
         output.println(prix("foieGras", 230, 230));
     }
     
     static void change(String a, int b, double c) 
     {
        String d = a;
        int e = b;
        double f = c;
        a = "Hello";
        b = b * 2;
        c = 3.14;
        d = "Coucou";
        e = -1;
        f = 0.07;
     }
     
     static void testChange() 
     {
        String a = "Bonjour";
        int b = 1;
        double c = 0.0;
        String d = a;
        int e = b;
        double f = c;
        change("Bonjour", 1, 0.0);
        change(a, b, c);
        change(d, e, f);
     }
     
     static String saisirChaine (String messageInvite)
    {
        String chaine;
        output.println(messageInvite);
        chaine = input.next();
        return chaine;
    }
    
    static int saisirNombre (String messageInvite)
    {
        int nombre;
        output.println(messageInvite);
        nombre = input.nextInt();
        return nombre;
    }
    
    static void afficherInfos ()
    {
        String nom;
        int age;
        nom = saisirChaine("nom?");
        age = saisirNombre("age?");
        output.println("Vous vous nommez " + nom + " et vous avez " + age + "ans");
    }
    
    static void dessinerEncoreUnDessin ()
    {
        String commande;
        int x;
        int y;
        commande = saisirChaine("commande?");
        x = saisirNombre("x?");
        y = saisirNombre("y?");
        output.println(dessine(commande,x,y));
    }
    
    static void createWindow ()
    {
        int x = 400;
        int y = 300;
        int a = x/2;
        int b = y/2;
        Window myWindow;
        myWindow = new Window(x, y, "TP2: premiers dessins");
        output.println("Largeur: "+ myWindow.getWidth());
        output.println("Hauteur: "+ myWindow.getHeight());
        pause(5000);
        myWindow.setSize(a, b);
        output.println("Largeur: "+ myWindow.getWidth());
        output.println("Hauteur: "+ myWindow.getHeight());
        modifyWindow();
    }
    
    static void modifyWindow (x, y, "TP2: premiers dessins")
    {
        int x;
        int y;
        String title;
        Window myWindow;
        title = saisirChaine("title?");
        myWindow.setTitle(title);
        x = saisirNombre("x? ");
        y = saisirNombre("y? ");
        myWindow.setSize(x, y);
        output.println("Largeur: "+ myWindow.getWidth());
        output.println("Hauteur: "+ myWindow.getHeight());
    }
    
    static void coloredWindow()
    {
        Window myWindow;
        myWindow = new Window(400, 400, "TP2: couleurs");
        myWindow.setBackgroundColor(yellow);
    }
    
    static void changeColorWindow ()
    {
        Window myWindow;
        myWindow = new Window(400, 400, "TP2: couleurs");
        pause(2000);
        myWindow.setBackgroundColor(cyan);
        output.println("Couleur: "+ myWindow.getBackgroundColor());
    }
    
    static void oneImage() 
    {
        int x = 500;
        int y = 500;
        int a = (x-184)/2;
        int b = (y-274)/2;
        Window window = new Window(x, y, "One Image");
        window.drawImage(a, b, "blueJay_1.png");
    }
    
    static void twoLines() 
    {
        Window window = new Window(300, 300, "Two lines");
        window.drawLine(red, 10, 20, 200, 120);
        window.drawLine(blue, 20, 0, 180, 300);
    }
    
    static void drawDiagonals()
    {
        int x = 500;
        int y = 600;
        int z = 0;
        Window window = new Window(x, y, "drawDiagonals");
        window.drawLine(blue, z, z, x, y);
        window.drawLine(blue, z, y, x, z);
    }
    
    static void drawMeidans ()
    {
        int x = 500;
        int y = 300;
        int z = 0;
        int a = x/2;
        int b = y/2;
        Window window = new Window(x, y, "drawMedians");
        window.drawLine(red, a, z, a, y);
        window.drawLine(red, z, b, x, b);
    }    
    
    static void drawEnvelope() 
    {
       Window window = new Window(300, 300, "Draw envelope");
       window.drawLine(blue, 50, 250, 50, 150);
       pause(500);
       window.drawLine(blue, 50, 150, 150, 100);
       pause(500);
       window.drawLine(blue, 150, 100, 250, 150);
       pause(500);
       window.drawLine(blue, 250, 150, 50, 150);
       pause(500);
       window.drawLine(blue, 50, 150, 250, 250);
       pause(500);
       window.drawLine(blue, 250, 250, 50, 250);
       pause(500);
       window.drawLine(blue, 50, 250, 250, 150);
       pause(500);
       window.drawLine(blue, 250, 150, 250, 250);
    }
    
   static void drawCross()
   {
       int x = 500;
       int y = 500;
       int a = x/2;
       int b = y/2;
       int c = (x/2)/2;
       int d = (y/2)/2;
       int e = (x/2)+c;
       int f = (y/2)+d;
       Window window = new Window(x, y, "drawCross");
       window.drawLine(blue, a, d, a, f);
       window.drawLine(red, c, b, e, b);
   }
   
   static void drawCenteredRectangle ()
   {
       int x = 500;
       int y = 300;
       int a = (x/4)+(x/4)/2;
       int b = a+(x/4);
       int c = (y/4)+(y/4)/2;
       int d = c+(y/4);
       Window window = new Window(x, y, "drawCenteredRectangle");
       window.drawLine(blue, a, c, b, c);
       window.drawLine(red, a, c, a, d);
       window.drawLine(blue, a, d, b, d);
       window.drawLine(red, b, d, b, c);
   }
 
  }