import javax.swing.JOptionPane;

public class CalculatingDifferentAreasWithLoops
{
    public static void main(String[] args) {
       double area = 0;
       double sum = 0;
       double highest = 0;
       double lowest = ????
       do {
           
       if(shape.equalsIgnoreCase("square")) {
           String lengthString = JOptionPane.showInputDialog("What is the length of the square?");
           double length = Integer.parseInt(lengthString);
           area = length * length;
       }else if(shape.equalsIgnoreCase("rectangle")) {
           String lengthString = JOptionPane.showInputDialog("What is the length of the rectangle?");
           String widthString = JOptionPane.showInputDialog("What is the width of the rectangle?");
           double length = Integer.parseInt(lengthString);
           double width = Integer.parseInt(widthString);
           area = length * width;
       }else if(shape.equalsIgnoreCase("triangle")) {
           String heightString = JOptionPane.showInputDialog("What is the height of the triangle?");
           String baseString = JOptionPane.showInputDialog("What is the base of the triangle?");
           double height = Integer.parseInt(heightString);
           double base = Integer.parseInt(baseString);
           area = height * base / 2;
       }else if(shape.equalsIgnoreCase("circle")) {
           final double PI = 3.1415;
           String radiusString = JOptionPane.showInputDialog("What is the raidus of the circle?");
           double radius = Integer.parseInt(radiusString);
           area = PI * radius * radius;
      
       }else {
           JOptionPane.showMessageDialog(null, "We can not calulate that shape at the moment, you scrub");
       } 
       JOptionPane.showMessageDialog(null, "The area of the " + shape + " is " + area);
       String inputString = JOptionPane.showInputDialog("Enter a 1 to run again (Enter a 0 to quit)");
       input = Integer.parseInt(inputString);
       sum += input;
       }while(input != 0);
    } 
}

 