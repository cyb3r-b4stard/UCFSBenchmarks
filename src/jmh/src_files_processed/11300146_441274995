
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class AMPEL
{
    LAMPE lampeOben;
    LAMPE lampeMitte;
    LAMPE lampeUnten;
    String ampelphase;
    int xPosition;
    int yPosition;

    
    public AMPEL(String ampelphase, int xPosition, int yPosition)
    {
        this.xPosition = xPosition;
        this.yPosition = yPosition;
        this.ampelphase = ampelphase;
        LAMPE lampeOben = new LAMPE();
        this.lampeOben = lampeOben;
        lampeOben.PositionSetzen(xPosition, yPosition);
        LAMPE lampeMitte = new LAMPE();
        this.lampeMitte = lampeMitte;
        lampeMitte.PositionSetzen(xPosition, yPosition + 1);
        LAMPE lampeUnten = new LAMPE();
        this.lampeUnten = lampeUnten;
        lampeUnten.PositionSetzen(xPosition, yPosition += 2);
        this.ampelphaseSetzen(ampelphase);
        }
    

    public int getyPosition(){
        return this.yPosition;
    }
    
    public void ampelphaseSetzen(String ampelphase){
        switch(ampelphase){
            case "rot" : lampeOben.FarbeSetzen("rot");
                         break;
            case "rot-gelb" : lampeOben.FarbeSetzen("rot");
                              lampeMitte.FarbeSetzen("gelb");
                              break;
            case "gelb" : lampeMitte.FarbeSetzen("gelb");
                          break;
            case "gruen" : lampeUnten.FarbeSetzen("gruen");
                           break;
            default: System.out.println("Die angegeben Ampelphase wird nicht erkannt!\n" +
                                        +"Versuche es mit 'rot', 'rot-gelb', 'gelb'" +
                                        +"oder 'gruen' !")
                       break;
    
    
        }
    }
    
    public void ampelpositionSetzen(int xPosition, int yPosition){
        this.xPosition = xPosition;
        this.yPosition = yPosition;
        lampeOben.PositionSetzen(xPosition, yPosition);
        lampeMitte.PositionSetzen(xPosition, yPosition + 1);
        lampeUnten.PositionSetzen(xPosition, yPosition += 2);
        
    }
}