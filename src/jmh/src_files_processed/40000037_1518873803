
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Date
{
    private int month;
    private int day;
    private int year;
    

    
    public Date()
    {
        month = 0;
        day = 0;
        year = 0;
    }
    public Date(int m, int d, int y){
        month = m;
        day = d;
        year = y;
    }
    public int getMonth(){
        return month;
    }

    public int getDay(){
        return day;
    }

    public int getYear(){
        return year;
    }
    
    public String changeMonth(){
        if(month == 1 ){
        return "Jan";
        }
        if(month == 2 ){
        return "Feb";
        }
        if(month == 3 ){
        return "Mar";
        }
        if(month == 4 ){
        return "Apr";
        }
        if(month == 5 ){
        return "May";
        }
        if(month == 6 ){
        return "Jun";
        }
        if(month == 7 ){
        return "Jul";
        }
        if(month == 8 ){
        return "Aug";
        }
        if(month == 9 ){
        return "Sep";
        }
        if(month == 10 ){
        return "Oct";
        }
        if(month == 11 ){
        return "Nov";
        }
        return "Dec";
    }
    
    public void print(){
        System.out.println(changeMonth() + " " + day + ", " + year);
    }
    
    public boolean isLeapYear(){
        if((getYear()%400) == 0){
            return true;
        }
        if((getYear()%100) == 0){
            return false;
        }
        if((getYear()%4) == 0){
            return true;
        }
        return false;
    }
    
    public int numDaysInMonth(){
        if(getMonth() == 1){
            return 31;
        }
        if(getMonth() == 2){
            if(isLeapYear() == true){
                return 29;
            }
            return 28;
        }
        if(getMonth() == 3){
            return 31;
        }
        if(getMonth() == 4){
            return 30;
        }
        if(getMonth() == 5){
            return 31;
        }
        if(getMonth() == 6){
            return 30;
        }
        if(getMonth() == 7){
            return 31;
        }
        if(getMonth() == 8){
            return 31;
        }
        if(getMonth() == 9){
            return 30;
        }
        if(getMonth() == 10){
            return 31;
        }
        if(getMonth() == 11){
            return 30;
        }
        return 31;
    }
    
    public boolean isValid(){
        if((getMonth() >= 1)&&(getMonth() <= 12)){
           if((getDay() >= 1)&&(getDay() <= numDaysInMonth())){
               return true;
           }
        }
        return false;
       }
    
    public Date tomorrowsDate(){
        if((new Date (getMonth(), getDay() + 1, getYear())).isValid()){
            return new Date(getMonth(), getDay() + 1, getYear());
        }
        if(getMonth() != 12){
            return new Date(getMonth() + 1, 1, getYear());
        }
        return new Date (1, 1, getYear() + 1);
    }
    /*
