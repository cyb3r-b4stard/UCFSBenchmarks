public class BeeldendeIteraties
{
    
    /**
     * Constructor for objects of class BeeldendeIteraties
     */
    public BeeldendeIteraties()
    {
        
    }

    public void tekenRaam( int rij, int kolom)
    {
        String lijn = "";
        for (int i = 0; i<rij; i++){
            if (i == 0 || i== rij-1)
            {
                
                for (int j = 0; j<kolom;j++){
                    lijn += "#";
                }
            }
            else{
                for (int j = 0; j<kolom; j++){
                    if (j== 0|| j==kolom-1){
                        lijn+="#";
                    }
                    else{
                        lijn+="0";
                    }
                }
            }
            System.out.println(lijn); 
            lijn = "";
        
        
    }
                    
    }
    private boolean isPriemgetal(int getal){
        
        if (getal ==1||getal==0||getal==2){
            return true;
        }
        else{ 
            boolean bool = true ;
            for (int i = 2; i<(getal/2+1);i++){
                if ((getal%i)==0){
                    bool = false;
                    break;
                }
                bool = true ;               
            }
            return bool;
        }
    }
    public void priemTabel()
    {
        for (int rij =-1; rij<20;rij++){
            if (rij== -1){
                System.out.println("  0123456789");
            }
            else{
                String lijn = "";
                for (int kolom = -1; kolom<11;kolom++){
                    if (kolom == -1){
                        lijn += (Integer.toString(rij)+" ");
                    }
                    else {
                        if (isPriemgetal(10*rij +kolom)){
                            lijn += "#";
                        }
                        else{
                            lijn += " ";
                        }
                    }
                    
                }
                System.out.println(lijn);
                
            }
            
        }
    }
                   
    public void tekenSinus()     
    {
        for (int i = 0; i<361;i+=12)
        double x; 
        x= toRadian(i);
    }
}