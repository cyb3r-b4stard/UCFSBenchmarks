import java.util.Scanner;
import java.util.Random;
public class Guess
{
    public static void main(String[] args)
    {
        int numToGuess = 0; 
        int guess; 
        int rand;
        Scanner scan = new Scanner(System.in);
        Random generator = new Random();
        rand = generator.nextInt(9) + 1;
        boolean correct = true;
        while (correct) 
        {
            System.out.print("Please enter a guess: a number between 1 and 10: ");
             guess = scan.nextInt();
             numToGuess++;
            if(guess <= rand){
                System.out.println("Your guess is lower. Try again");
            }if(guess >= rand){
                System.out.println("Your guess is higher. Try again");
            }
        }
            
        } 
        System.out.print("Congratulations: Your guess is correct. You took "" guesses");
    }
}
