
/**
 * ###### #### #######
 * 
 * @####### ## 
 * @#/##/##
 */
public class Statistics
{
    private int x;
    private int size;
    private int min;
    private int max;
    private int total;
    private double mean;
    private IntMap m;
    private int mode;
    private int median;

    /**
     * Constructor for objects of class Statistics
     */
    public Statistics()
    {
        min = 100;
        max = -100;
        size = 0;
        total = 0;
        IntMap(int defaultValue)
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void tally(int n)
    {
        x = n; 
        size = size + 1;
        total = total + n;
        if (x < min)
            min = x;
        if (x > max)
            max = x;
        mean = total/size;
        m.put(1,2);
       
    }

    public int size()
    {
        return size;
    }

    public int getMin()
    {
        if (x < min)
            min = x;
        return min;
    }

    public int getMax()
    {
        if (x > max)
            max = x;
        return max;
    }

    public double getMean()
    {
        return total/size;
    }

    public String toString()
    {
        return "Size: " + size + 
        "  Minumum: " + min + 
        "  Maximum: " + max + 
        "  Mean: " + mean +
        "  Mode: " + mode;

    }

    public static void main (String[] args)
    {
        Statistics stat1 = new Statistics();
        DataGenerator dataGene1 = new DataGenerator();
        for (int i=0; i<10 ; i++)
            stat1.tally(dataGene1.getDataPoint ());
        System.out.println(stat1.toString());

    }

    public int getMode()
    {
        return mode;
    }

}
