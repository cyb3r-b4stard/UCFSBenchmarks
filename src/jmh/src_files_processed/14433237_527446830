public class Memoria
{
   

   
    public static void guardarMatriz(Matriz m1,String nom1)
    {
        PrintWriter g;
        try{
            g=new PrintWriter(new File(nom1));
            g.print(m1.getDimF()+" "+m1.getDimC());
            g.println("");
            for(int i=0;i<m1.getNum();i++){
              g.print(m1.darElemento(i).getFila()+" "+m1.darElemento(i).getCol()+" "+m1.darElemento(i).getComplejo().getA()+" "+m1.darElemento(i).getComplejo().getB()+" ");
              if(m1.darElemento(i).getComplejo().getN()==0)g.print('P');
              else g.print('C');
              g.println("");  
              
             }
             g.close();
          }
        catch(FileNotFoundException fnfe){
            
            System.out.println("el archivo no es accesible");
        }
        
        
        }
    public static void leerMatriz(String nom2)
    {
        Scanner f=null;
        Matriz m1=new Matriz();
        int i=0;
        try{
         f=new Scanner(new File(nom2));   
        }
        catch(FileNotFoundException fnofe){
         System.out.println("el archivo no es accesible");
        }
        if(f!=null){
          if(f.hasNextLine()){ 
           Scanner linea= new Scanner(f.nextLine());
           
           m1.setDimF(linea.nextInt());
           m1.setDimC(linea.nextInt());
            
            }
           
         }
         while(f.hasNextLine()){
            boolean correcto=false; 
            Scanner linea=new Scanner(f.nextLine());
            int f,c,a,b;
            String forma="";
            if(f.nextInt()<=m1.getDimF()){
             f=linea.nextInt();
            }
            if(f.nextInt()<=m1.getDimC()){
             c=linea.nextInt();
            }
            if(f.nextdouble()!=0){
             a=linea.nextInt();
            }
            if(f.nextInt()!=0){
             b=linea.nextInt();
            }
            if(f.nextString()="C" || f.nextString()="P"){
             forma=linea.nextStrin();   
             correcto=true;
            }
            if(correcto){
              
            }
            i++;
            
            }  
        
              
              
              
          }
        
        
        
        
        
        }
        
        
        
   
