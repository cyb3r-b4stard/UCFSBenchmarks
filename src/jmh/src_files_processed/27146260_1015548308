import java.util.*;
import java.io.*;
public class UnderLibs {
    public static void main(String[] args) throws FileNotFoundException {
        Scanner console = new Scanner(System.in);
        System.out.print("Which story do you want to hear? ");
        String storyTime = console.next();
        Scanner input = new Scanner(new File(storyTime));
        PrintStream output = new PrintStream(new File("UserStory.txt"));
        System.out.print("Please enter a place: ");
        String Earth = console.next();
        String Town = Earth;
        System.out.println();
        
        System.out.print("Please enter a plural noun: ");
        String Monsters = console.next();
        System.out.println();
        
        System.out.print("Please enter an adjective: ");
        String Victorious = console.next();
        System.out.println();
        
        System.out.print("Please enter a verb ending in -ed: ");
        String Sealed = console.next();
        System.out.println();
        
        System.out.print("Please enter a noun: ");
        String Spell = console.next();
        System.out.println();
        
        System.out.print("Please enter a noun: ");
        String Mountain = console.next();
        System.out.println();
        
        System.out.print("Please enter a verb: ");
        String Climb = console.next();
        System.out.println();
        
        System.out.print("Please enter a verb: ");
        String Return = console.next();
        System.out.println();

        System.out.println();
        while (input.hasNext()) {
            String newLine = input.nextLine();
            Scanner data = new Scanner(newLine);
            String NewLine = newLine.replace("<place>:", Earth + ":");
            String NEwLine = NewLine.replace("<plural-noun>", Monsters);
            String NEWLine = NEwLine.replace("<adjective>", Victorious);
            String NEWLIne = NEWLine.replace("<verb-in-past-tense>", Sealed);
            String NEWLINe = NEWLIne.replace("<noun>.", Spell);
            String NEWLINE = NEWLINe.replace("<noun>", Mountain);
            String newline = NEWLINE.replace("<verb>.", Return);
            String Newline = newline.replace("<verb>", Climb);
            String NEwline = Newline.replace("<place>."), Town);
            output.println(NEwline);
        }
        System.out.println("Your story should be ready now.");     
    }
}
        