public class Auto
{
    private String automarke;
    private String autotyp;
    private double hubraum;
    private int lagerBestand;
    private boolean turbo;

    /**
     * Constructor for objects of class Auto
     */
    public Auto(String marke, String typ, double hubraum, boolean turbo )
    {
        automarke = marke;
        autotyp = typ;
        this.hubraum = hubraum;
        this.turbo = turbo;
        this.lagerBestand = 0;
    }

    public void autoErfassen(String marke, String typ, double hubraum, boolean turbo, int lagerBetand)
    {
        automarke = marke;
        autotyp = typ;
        this.hubraum = hubraum;
        this.turbo = turbo;
        this.lagerBestand = lagerBestand;
        if (automarke.length <  && hubraum >=8){
            hubraum += 0;
            System.out.println("Falsche Eingabe. Bitte einen Wert zwischen 0.5 -8 L eintragen!");
        }
        
        
        if (hubraum <=0.5 && hubraum >=8){
            hubraum += 0;
            System.out.println("Falsche Eingabe. Bitte einen Wert zwischen 0.5 -8 L eintragen!");
        }
    }

    /**
     * Methode Autoinfo braucht man um Marke, 
     * Typ & Hubraum infos einzugeben
     * Date:5.Jan
     */
    public void zeigeAuto()
    {

        System.out.println("Code: "+ automarke +"-"+autotyp+"-"+hubraum+" "+turbo);
        System.out.println("Lagerbestand: "+lagerBestand);

    }
}