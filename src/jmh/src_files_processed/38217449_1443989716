import java.util.Scanner;

public class PigLatin {

    public void PigLatin() {
    }
    
    /* Every class should have a main method with this method signature.
     * The input argument String[] args is used in case you call this method
     * from the command line with additional arguments.  We do not use 
     * them here.
     * 
     * This is the method that gets called when we run the .java file
     */
    public static void main(String[] args) {
        System.out.println("Please enter a word");
        Scanner userInput = new Scanner(System.in);
        String engWord = userInput.nextLine();

        System.out.println(engWord + " is " + toPigLatin(engWord) + " in Pig Latin!");

    }

    /* This method takes the input and translates it into
     * Pig Latin according to the Pig Latin Rules.
     * 
     * The method returns the translated word.
     */
    public static String toPigLatin(String word) {
     {
         char startLetter = word.charAt(0);
         if (startLetter == ('a') || startLetter == ('e') || startLetter == ('i') || startLetter == ('o') || startLetter == ('u')) {
          word = word + ("way");
            }
            else{
                word =  str.substring(str.length(1) +   str.substring(str.length()+  str.substring(str.length(0))

        }
    }
  }
}