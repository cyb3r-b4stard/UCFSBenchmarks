class Carpenter extends Robot {
    public Carpenter() {
        super(1, 1, East, -1);
    }
    private boolean rightClear;
    private boolean leftClear;
    private int street;
    private int avenue;
    private Direction direction;
    this.street=1;
    this.avenue=1;
    this.direction=East;
    public void 
    public void turnRight(){
        turnLeft();
        turnLeft();
        turnLeft();
    }
    public boolean leftIsClear(){
        turnLeft();
        leftClear=frontIsClear();
        turnRight();
        return leftClear;
    }
    public boolean rightIsClear(){
        turnRight();
        rightClear=frontIsClear();
        turnLeft();
        return rightClear;
    } 
    public void checkIfRoom(){
        if(facingEast()==true){
            turnLeft();
        }
        else if(facingSouth()==true){
            turnLeft();
            turnLeft();
        }
        else if(facingWest()==true){
            turnRight();
        }
        while(rightIsClear()==false&&frontIsClear()==true&&leftIsClear()==false){
            move();
        }
        if(rightIsClear()==false&&frontIsClear()==false&&leftIsClear()==false){
            
        }
    }
    public void carpetIfRoom(){
        
    }
}