 public static void main(String args[])
   {
      String original;
      Scanner in = new Scanner(System.in);
 
      System.out.println("Enter a string: ");
      original = in.nextLine();
      int stringlength = original.length();
      System.out.println("string length is: " + stringlength);
      
      if ((stringlength & 1)== 0) 
      {
      System.out.println("string is even and middle character is: " + original.charAt(stringlength/2 - 1) + original.charAt(stringlength/2));
    }
