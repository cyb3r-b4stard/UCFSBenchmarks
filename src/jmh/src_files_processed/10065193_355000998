import java.util.Scanner;

public class Vshape
{
   

 public static void printVshape (String str, int count)
    {
      if( count <= 0 ) return;
      String p=str;
      char midletter = p.charAt(count/2);
      for (int i=1; i<count; i++)
      {
          
           if (i == ((count)/2)) 
          {
             System.out.print(p.charAt(i-1));
             System.out.print(p.charAt(i));
         if ((i & 1)== 0) 
