
import java.util.Scanner;
/**# ###### ####: ######### #### # #### ## #### ###### ### #### ## #####
 */
public class CoffeeShop
{
    private int coffeeOz;
    private double milkOz;
    
    public static final double COFFEE_COST_PER_OUNCE = 0.40;
    public static final double MILK_COST_PER_OUNCE = 0.30;
    

    /**
     * Constructor for objects of class CoffeeShop
     */
    public CoffeeShop()
    {
        coffeeOz = 10;
        milkOz = 0.5;
    }

    public void welcomeCustomer(){
        System.out.println("Hi there! What can I get for you?");
        System.out.println("How many ounces of coffee?");
        Scanner scnr = new Scanner(System.in);
        coffeeOz = scnr.nextInt();
        System.out.println("How many ounces of milk?");
        milkOz = scnr.nextDouble();
        
        makeCoffee();
        double price = calculatePrice();
        System.out.println("Here is your coffee. That will be: $ "+price);
    }
    
    public double calculatePrice() {
        return COFFEE_COST_PER_OUNCE*coffeeOz+MILK_COST_PER_OUNCE*milkOz;
}

public void makeCoffee(){
    System.out.println("Making "+coffeeOz+" ounces of HOT coffee");
    System.out.println("and adding "+milkOz+" ounces of FRESH milk");
}
public void main () {
    welcomeCustomer();
    calculatePrice();
    
  
}        
   