import java.awt.*;
import javax.swing.*;
import java.awt.geom.*;

public abstract class Smiley extends JPanel implements Runnable
{
    final int DELTA_X = 20;

    Path2D gesicht = new Path2D.Double();
    Path2D augen = new Path2D.Double();
    Ellipse2D auge_links;
    Ellipse2D auge_rechts;

    Path2D mund;
    BasicStroke myBasicStroke = new  BasicStroke(5.0f, BasicStroke.CAP_ROUND, BasicStroke.JOIN_ROUND, 1.0f);

    Ellipse2D kopf;

    Color farbe;

    AffineTransform init = AffineTransform.getTranslateInstance(10,100);

   	

    public Smiley()
    {
        auge_links = new Ellipse2D.Double(20,20,20,20);
        auge_rechts = new Ellipse2D.Double(60,20,20,20);
        kopf = new Ellipse2D.Double(0,0,100,100);

        augen.append(auge_links, false);
        augen.append(auge_rechts, false);
        augen.transform(init); 
        gesicht.transform(init); 

    }

    public void paint(Graphics g)
    {
        Graphics2D g2 = (Graphics2D)g;
        super.paint(g);

        g2.setStroke(myBasicStroke);
        g2.setColor(Color.BLACK);
        g2.draw(kopf);
        g2.setColor(farbe);
        g2.fill(kopf)zeitsystem aufgerufen - Signatur daher nicht ver√§ndern!
    public void run()
    {
    }
}