

import objectdraw.*;
import java.awt.*; 

public class Waffle extends ActiveObject
{
    
    private FilledRect obj;
    private FilledOval obj2;
    private int xChange, yChange;
    private RnadomIntGenerator ranGen, ranGen2;
    private boolean canMove = true;

    public Waffle ( double x,double y,double w,double h, DrawingCanvas canvas)
    { 
        ranGen = new RandomIntGenerator (1,250);
        ranGen2 = new RandomIntGenerator (-5,5);
        obj= new FilledRect(x,y,w,h,canvas);
        obj.setColor(newColor (ranGen.nextValue(), ranGen.nextValue(), ranGen.nextValue()));
        obj2 = new FilledOval (x,y,w,h, canvas);
        obj2.setColor (newColor (ranGen.nextValue(), ranGen.nextValue(), ranGen.nextValue()));
        xChange = ranGen2.nextValue();
        yChanve = ranGen2.nextValue();
        if (xChange == 0)
        {
            xChange = -5);
        }
        if (yChange == 0)
        {
            yChange = -5;
        }
        
        
        
        start();
    }
    
    public void run()
    {
        if (canMove == true)
        {
            obj.move (xChange, yChange);
            obj2.moveTo (obj.getLocation);
            
        }
        
    }
    public int getX()
    {
        return obj.getX();
    }
   

}