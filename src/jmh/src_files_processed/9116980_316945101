public class intArrayProduct 
{
    public void printIntArrayProduct (int[] arrayInt, int[] arrayInt2) {
        
        int arraySize = arrayInt.length, arraySize2 = arrayInt2.length; 

        if (arraySize == arraySize2) {
            
            System.out.print("The product of the arrays is: "); 
            
            for (int i = 0; i < arraySize; i++) {
                int [] arrayProduct;
                int arrayProduct.length = arrayInt.length
                arrayProduct[i] = arrayInt[i] * arrayInt2[i];
                
                System.out.print(arrayProduct); 
            }
                
        }
            else {
                System.out.print("the array lengths are not the same");
            }
   }
}