 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Partida
{
  private String ronda;
  private Fecha fechaEncuentro;
  private Jugador jugador1;
  private Jugador jugador2;
  
  public Partida()
  {
    ronda= "caca";
    fechaEncuentro= new Fecha();
    jugador1= new Jugador();
    jugador2= new Jugador();      
    }
    
  public Partida(String ronda,Fecha fechaEncuentro,Jugador jugador1,Jugador jugador2)
  {
    setRonda(ronda);
    setFechaEncuentro(fechaEncuentro);
    setJugador1(jugador1);
    setJugador2(jugador2);      
    }
    
  
  public String getRonda()
  {
   return ronda;   
    }
   
  public Fecha getFechaEncuentro()
  {
   return fechaEncuentro;   
    }
    
  public Jugador getJugador1()
  {
   return jugador1;   
    }
    
  public Jugador getJugador2()
  {
   return jugador2;   
    }
    
  
  public void setRonda(String ronda)
  {
   this.ronda= ronda;
    }
    
  public void setFechaEncuentro(Fecha fechaEncuentro)
  {
   this.fechaEncuentro= fechaEncuentro;
    }
    
  public void setJugador1(Jugador jugador1)
  {
   this.jugador1= jugador1;
    }
    
  public void setJugador2(Jugador jugador2)
  {
   this.jugador2= jugador2;
    }
    
  public void Imprimir()
  {
   System.out.println("RONDA: "+ronda);
   System.out.println("");
   fechaEncuentro.Imprimir();
   System.out.println("");
   System.out.println("PRIMER JUGADOR: ");
   jugador1.Imprimir();
   System.out.println("");
   System.out.println("SEUNDO JUGADOR: ");
   jugador2.Imprimir();
    }
    
  
  public void ListarPartidas()
  {
   System.out.println("DATOS DE LA PARTIDA: ");
   fechaEncuentro.Imprimir();
   System.out.print("PRIMER JUGADOR: "+jugador1.getNombre()+""+jugador1.getApellido());
   System.out.println("V7S");
   System.out.println("SEGUNDO JUGADOR ");+jugador2.getNombre()+""+jugador2.getApellido());
   
      
    }
    
  public String Mejor()
  {     
   if(jugador1.getRankingnacional()!=jugador2.getRankingnacional())
   {
    if (jugador1.getRankingnacional() < jugador2.getRankingnacional())
        {
            return jugador1.getNombre();}
            
      else 
    {
        return jugador2.getNombre();
    }
    }
    else{ return "LOS RANKING SON IGUALES";}  

    }
}
    
  
    
