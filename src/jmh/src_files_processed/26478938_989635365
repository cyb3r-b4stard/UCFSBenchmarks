import java.util.Scanner;
class BABA
{
    public static void main()
    {
        int ch;
        ch=1,2,3;
        String a;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter Your Name Please");
        a=sc.nextLine();
        System.out.println("Hii Mr."+a);
        System.out.println("What Would you like to eat for the lunch sir. Enter 1 for DAL,VAT,MANGSO. Enter 2 for VEGETARIAN DINNER. ENTER 3 for DAL,VAT,FISH,ALU VATE.");
        switch (ch){
            case 1:
            System.out.println("Your MEAL will be ready in 2 hours, you can utilise the time to get ready for your office");
            break;
            case 2:
            System.out.println("Your Meal Will be ready in 45 minutes, you can complete your bath in that time");
            break;
            case 3:
            System.out.println("Your meal will be ready in 1 and a half hours, You can finish your office work and finish your bath in that time");
            break;
        }
    }
}