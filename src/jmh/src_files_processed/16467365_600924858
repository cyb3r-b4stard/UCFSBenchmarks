import java.util.Random;
/**
 * ##### # ########### ## ##### ############### ####.
 * 
 * @###### ######
 * @####### #.#.####
 */
public class VariousMethods2
{
    public static void printDistance(int yards)
    /**
     * Prints the distance represented by the specified number of
     * yards as miles and yards.
     * @param yards the number of yards
     */
    {
        int miles = yards / 1760;
        int remainder = yards % 1760;
        System.out.println(yards + " yards is " + miles + " miles and "+ remainder + " yards");
    }

    public static void random100()
    {
        /**
         * Prints random number
         * @param none
         */
        Random generator = new Random();
        int number = generator.nextInt(100+1);
        System.out.println(number);
    }

    public static void coinValue(double quarters, double dimes, double nickels, double pennies)
    {
        /**
         * adds up change
         * @param quarters number of quarters
         * @param dimes number of dimes
         * @param nickels number of nickels
         * @param pennies number of pennies
         */
        if (quarters < 0 || dimes < 0 || nickels < 0 || pennies < 0) {
            System.out.println("0.0");    
        }
        else {
            double totalq = quarters * .25;
            double totald = dimes * .1;
            double totaln = nickels * .05;
            double totalp = pennies * .01;
            System.out.println(totalq + totald + totaln + totalp);
        }
    }

    public static int sumAlternating(int start, int end)
    {
        /**
         * adds every other integer in a sequence
         * @param start the first integer   
         * @param end the last integer
         */
        int sum = 0;
        for (start = start; start <= end; start = start + 2) {
            sum = sum + start;
        }
        return sum;
    }

    public static void stringAlternating(String start)
    {
        int i = 0
        String toReturn = "";
        for (i ; i < start.length(); i += 2) {
            toReturn += start.charAt(i);
        }
        System.out.println(toReturn);
    }
}