import java.util.*;
public class CoinFlips
{
    public static void main (String[] args)
    {
        double r;
        int heads = 0;
        for (int t=1;t<=100;t++)
        {
            r = Math.random() * 2 + 1;
            r = (int)(r);
            System.out.println (r);
            while (r==1)
            {
                heads++
            }

        }
            System.out.println ("The longest string of heads was " + heads);
    }
}