import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.*;

public class Buecherstapel extends JFrame {
    private JButton jButton1 = new JButton();
    private JLabel jLabel1 = new JLabel();
    private JLabel jLabel2 = new JLabel();
    private JLabel jLabel3 = new JLabel();
    private JLabel jLabel4 = new JLabel();
    private JComboBox jComboBox1 = new JComboBox();
    private DefaultComboBoxModel jComboBox1Model = new DefaultComboBoxModel();
    private JComboBox jComboBox2 = new JComboBox();
    private DefaultComboBoxModel jComboBox2Model = new DefaultComboBoxModel();
    private JComboBox jComboBox3 = new JComboBox();
    private DefaultComboBoxModel jComboBox3Model = new DefaultComboBoxModel();
    private JComboBox jComboBox4 = new JComboBox();
    private DefaultComboBoxModel jComboBox4Model = new DefaultComboBoxModel();

    private String[] buchstapel = new String[30];
    private String[] info = new String[20];
    private String[] mathe = new String[20];
    private String[] geschichte = new String[20];
    private Stack<Buch> stack = new Stack<Buch>();

    public Buecherstapel() { 
        setDefaultCloseOperation(WindowConstants.DISPOSE_ON_CLOSE);
        int frameWidth = 426; 
        int frameHeight = 286;
        setSize(frameWidth, frameHeight);
        Dimension d = Toolkit.getDefaultToolkit().getScreenSize();
        int x = (d.width - getSize().width) / 2;
        int y = (d.height - getSize().height) / 2;
        setLocation(x, y);
        setResizable(false);
        Container cp = getContentPane();
        cp.setLayout(null);

        for (int i = 0; i < 30; i ++) {
            int zufall = (int) ((Math.random()* 3) + 1);
            if (zufall == 1) {
                Buch buch = new Buch("Info");
                stack.push(buch);
                buchstapel[i] = buch.getName();
            } else if (zufall == 2) {
                Buch buch = new Buch("Mathe");
                stack.push(buch);
                buchstapel[i] = buch.getName();
            } else {
                Buch buch = new Buch("Deutsch");
                stack.push(buch);
                buchstapel[i] = buch.getName();
            }
        }
        
        if (stack.top().getName() == "Info") {
            stack.pop()
            System.out.println(stack.top().getName();
        }
        
        jComboBox1Model = new DefaultComboBoxModel(info);
        jComboBox2Model = new DefaultComboBoxModel(mathe);
        jComboBox3Model = new DefaultComboBoxModel(geschichte);
        jComboBox4Model = new DefaultComboBoxModel(buchstapel);
        
        jButton1.setBounds(8, 8, 113, 33);
        jButton1.setText("Start!");
        jButton1.setMargin(new Insets(2, 2, 2, 2));
        jButton1.addActionListener(new ActionListener() 
        
        
            { 
                public void actionPerformed(ActionEvent evt) { 
                    jButton1_ActionPerformed(evt);
                }
            }
        );
        
        
        
        cp.add(jButton1);
        jLabel1.setBounds(8, 56, 235, 33);
        jLabel1.setText("Geschichte B端cher");
        cp.add(jLabel1);
        jLabel2.setBounds(8, 128, 235, 33);
        jLabel2.setText("Info B端cher");
        cp.add(jLabel2);
        jLabel3.setBounds(8, 200, 235, 33);
        jLabel3.setText("Mathe B端cher");
        cp.add(jLabel3);
        jLabel4.setBounds(136, 8, 267, 33);
        jLabel4.setText("Erstellte B端cher");
        cp.add(jLabel4);

        jComboBox1.setModel(jComboBox1Model);
        jComboBox1.setBounds(238, 52, 177, 31);
        cp.add(jComboBox1);
        jComboBox2.setModel(jComboBox2Model);
        jComboBox2.setBounds(238, 125, 177, 31);
        cp.add(jComboBox2);
        jComboBox3.setModel(jComboBox3Model);
        jComboBox3.setBounds(238, 198, 177, 31);
        cp.add(jComboBox3);
        jComboBox4.setModel(jComboBox4Model);
        jComboBox4.setBounds(238, 5, 177, 31);
        cp.add(jComboBox4);

        setVisible(true);
    } 

    public void jButton1_ActionPerformed(ActionEvent evt) {
        
    } 
} 