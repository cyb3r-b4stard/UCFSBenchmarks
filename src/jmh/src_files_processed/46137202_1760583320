import java.util.*;
public class FormulaOne
{
    private String name;
    ArrayList<Racer> f1;
    
    public FormulaOne(String name)
    {
        f1 = new ArrayList<>();
        this.name=name;
    }
    
    public void add(Racer r)
    {
        f1.add(r);
    }
    
    public Optionaldouble avarageTopSpeed()
    {
        return f1.stream().mapToInt(racer -> racer.getTopSpeed()).average();
    }
    
    public Racer fastestRacer()
    {
        Racer fastestFucker = null;
        for (Racer r: f1)
        {
            if (fastestFucker == null || r.getTopSpeed() > fastestFucker.getTopSpeed())
            {
                fastestFucker = r;
            }                        
        }
        
        return fastestFucker;
    }
    
    public void printFormulaOne()
    {
        System.out.println(name);
        Collections.sort(f1);
        
        for(Racer r : f1)
        {
            System.out.println(r);
        }
    }
}