
/**
 * ##### ### ### #### ######### ########.
 * 
 * @###### #### ###### ####### 
 * @####### ######## 
 */
public class ServPublicos extends Coches
{
    
    private String servicio;

    /**
     * Constructor para Servicios Publicos
     */
    public ServPublicos(String marcaAuto)
    {
        
        super(marcaAuto);
        
    }

    /**
     * Marcar el Servicio publico
     * 
     * @param  Servicios Publicos: pueden ser Bomberos, Policias y Sanitarios
     * @return     the sum of x and y 
     */
    public String getServicio (String servicio)
    {
        this.servicio = servicio;
        switch (servicio){
            case "Bomberos":
            System.out.println ("Servicios de " +servicio);
            break;
            case "Policias":
            System.out.println ("Servicios de " +servicio);
            break;
            case "Sanitarios":
            System.out.println ("Servicios de " +servicio);
            break;
        }
        return servicio;
    }
    public void display()
    {
        super(display);
        System.out.println("Servicios de " +servicio);
        System.out.println("Revision extra de la Sirena");
    }
}