import java.io.*;
import java.util.*;
public class diagonal
{
    public static void main()
    {
        Scanner sc = new Scanner;
        int n=sc.nextInt();
        int A[][];
        int pdiag=0,sdiag=0;
        A= new int [n][n];
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<n;j++)
            {
                A[i][j]=sc.nextInt();
            }
        }
        for(int i=0;i<n;i++)
        {
            pdiag+=A[i][i];
            sdiag+=A[i][n-i-1];
        }
        System.out.println(pdiag-sdiag);
    }
}