import java.io.*;
public class CtoF
{
    public static void main(String args []) throws IOException
    {
        System.out.println("\t\t\t\t\tHello.\n\t\t\t\tWelcome to my program.");
        InputStreamReader  reader = new  InputStreamReader(System.in);
        BufferedReader input = new BufferedReader(reader);
        System.out.println("To Convert cenigrade to Fahrenheit, Please enter Centigrade: ");
        String cent=input.readLine();
        int n1=Integer.parseInt(cent);
        System.out.println("\t====================Here's the conversion==============");
        System.out.println("The Centigrade Value is: " +n1);
        double f=((n1*1.8)+32);
        System.out.println("Centigrade to Fahrenheit: " + f);
        double c,2 = ((f-32)*0.55);
        numSquared = Math.pow(c,2);
        System.out.println("Fahreheit to Centigrade: " + c);
        
        
    }
}
