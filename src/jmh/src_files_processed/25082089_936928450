import java.util.Random;


public class Nimmspiel
{
    public static void main (String [] args)
    {
        /* Idee :
         * 1) Wer anfängt ist egal, solang die Anzahl der Hölzer groß genug ist
         * 2) Es wird bis zu der kritischen Anzahl gespielt
         * 3) Wenn die kritische Anzahl erreicht ist wird mit if oder so abgefragt, 
         *    was gezogen werden soll
         * 4) Das Programm gewinnnt immer, wenn die Anzahl der Hölzer 4n+1 ist und das Programm
         *    am Zug ist.
         */
        int zahl = Integer.parseInt (args [0]); 
        int gegner = 0; 
        
        gegner = rand();
        
        System.out.printf("Der Gegner nimmt : %d\n\n" ,gegner);
        do
        {
            switch (zahl % 4)       
            {
                    case 0 : zahl = zahl - 3;            
                             gegner ();
                             break;
                    case 1 : gegner ();               
                             breake;
                    
                    case 2 : zahl = zahl - 2;               
                             breake;
                    
                    case 3 : zahl = zahl -1;               
                             breake; 
                    
            }
        }
        while (zahl>1);
        
        gegner = 1;
        zahl = zahl - gegner;
    }
    /*
     * Eine kleine Methode, die für den Gegner eine zufällig generierte Zahl übergibt
     */
    public static int rand ()
    {
        Random rand = new Random();     
        int gegner = rand.nextInt(3)+1; 
        return gegner;
    }    
}