public class Boat
{
    private static final String BODYTYPE = "powerboat";
    private int modelYear;
    private String modelName;
    private double horsepower;
    private String manufacturer;
    private boolean isTwinEngine;
    private static String webpage = "http:

    /**
     * Create a No-arg constructor
     */
    public Boat(){
    }

    /**
     * constructor for the objects
     * @ param theModelYear the year of the model
     * @ param theModelName the name of the model
     * @ param theManufacturer the name of the manufacturer
     * @ param theHorsepower the horsepower of the model
     * @ param theIsTwinEngine if the model is twinengined
     */
    public Boat(int theModelYear, String theModelName, String theManufacturer, int theHorsepower,
                boolean theIsTwinEngine){
                    
           if(theModelYear>=1973 && theModelYear<=2017){
               modelYear = theModelYear;
           }   
           else if(theModelYear<1973){
               System.out.println(theModelYear + "is too early, sorry");
           }
           else if(theModelYear>2017){
               System.out.println(theModelYear + "is too late, sorry");
           }
           
           if(theModelName != null && theModelName.length() > 0){
               modelName = theModelName;
           }
           else 
               System.out.println("a model name was not provided, sorry");
           
           if(theManufacturer!=null){
               manufacturer = theManufacturer;
           }
           
           if(theHorsepower>=50 && theHorsepower<=390){
               horsepower = theHorsepower;
           }
           else if(theHorsepower<50){
               System.out.println(theHorsepower + "is too little, sorry");
           }
           else if(theHorsepower>390){
               System.out.println(theHorsepower + "is too much, sorry");
           }
           
           if(theIsTwinEngine != false){
               isTwinEngine = theIsTwinEngine;
           }
    }
    
    /**
     * adjust the year of the model
     * @param theModelYear the year of Model you would like to set
     */
    public void setModelYear(int theModelYear){
           if(theModelYear>=1973 && theModelYear<=2017){
               modelYear = theModelYear;
           }   
           else if(theModelYear<1973){
               System.out.println(theModelYear + "is too early, sorry");
           }
           else if(theModelYear>2017){
               System.out.println(theModelYear + "is too late, sorry");
           }
    }
    
    /**
     * adjust the name of the model
     * @param theModelName the name of Model you would like to set
     */
    public void setModelName(String theModelName){
           if(theModelName != null && theModelName.length() > 0){
               modelName = theModelName;
           }
           else 
               System.out.println("a model name was not provided, sorry");
    }    
    
    /**
     * adjust the name of the manufacturer
     * @param theManufacturer the name of the manufacturer you would like to set
     */
    public void setManufacturer(String theManufacturer){
           if(theManufacturer!=null){
               manufacturer = theManufacturer;
           }
    }
    
    /**
     * adjust the horsepower of the model
     * @param theHorsepower the horsepower of the model you would like to set
     */
    public void setHorsepower(double theHorsepower){
           if(theHorsepower>=50 && theHorsepower<=390){
               horsepower = theHorsepower;
           }
           else if(theHorsepower<50){
               System.out.println(theHorsepower + "is too little, sorry");
           }
           else if(theHorsepower>390){
               System.out.println(theHorsepower + "is too much, sorry");
           }
    }
    
    /**
     * adjust the type of engine
     * @param isTwinEngine set the engine as twin or not
     */
    public void setTwinEngine(boolean theIsTwinEngine){
           if(theIsTwinEngine != false){
               isTwinEngine = theIsTwinEngine;
           }
    }
    
     /**
     * adjust the webpage
     * @param theWebpage adjust the webpage's url
     */
    public void setWebpage(String theWebpage){
           if(theWebpage != null){
               webpage = theWebpage;
           }
    }
    
    
    /**
     * @return get the year info of the model
     */
    public int getModelYear(){
        return modelYear;
    }
    
    /**
     * @return get the name of the model
     */
    public int getModelName(){
        return modelName;
    }
    
    /**
     * @return get the horsepower info of the model
     */
    public int getHorsepower(){
        return horsepower;
    }  
    


