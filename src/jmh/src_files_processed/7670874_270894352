import java.util.*;
/**
 * ##### # ########### ## ##### ############### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class StudentDatabase
{
    private ArrayList<Student> studentArray;

    /**
     * Constructor for objects of class StudentDatabase
     */
    public StudentDatabase()
    {
       studentArray = new ArrayList<Student>();
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void addStudent()
    {
        Student student;
        student = new Student();
        Scanner input = new Scanner (System.in);
        String studentName = "";
        String studentPhoneNo = "";
        String subjectName = "";
        
        System.out.println("Please insert student name");
        studentName = input.nextLine().trim();
        student.setName(studentName);
        
        System.out.println("Please insert student phone number");
        studentPhoneNo = input.nextLine().trim();
        student.setPhoneNo(studentPhoneNo);
        
        System.out.println("Please insert subject that the student is currently enrolled");
        subjectName = input.nextLine().trim();
        student.setSubject(subjectName);
        subjectName = input.nextLine().trim();
        student.setSubject(subjectName);
        studentArray.add(student);
    }
    
    public void removeStudent()
    {
        Scanner input = new Scanner (System.in);
        String studentName = "";
        
        System.out.println("Please insert student name you would like to delete");
        studentName = input.nextLine().trim();
        for (int i=0; i < studentArray.size(); i++)
        {
            if(studentName.equalsIgnoreCase(studentArray.get(i).getName()))
            {
                studentArray.remove(i);
                System.out.println(studentName + " has been successfully deleted");
            }
            else
            {
                System.out.println(studentName + " is NOT found in the database");
            }
        }
    }
    
    public void displayStudent()
    {
        String currentSubject = "";
        
        for (int i = 0; i < studentArray.size(); i++)
        {
            for (int j = 0; j < studentArray.get(i).totalEnrolledSubject(); j++)
            {
                System.out.print (studentArray.get(i).getSubject(j))
            }
            System.out.println(studentArray.get(i).getName() + ", " + studentArray.get(i).getPhoneNo() + ", " + currentSubject);
        }
    }
}
