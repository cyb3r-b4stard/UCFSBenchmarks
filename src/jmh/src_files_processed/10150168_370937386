import squint.*;
import javax.swing.*;
/**
 * ########## ### ######## ##### ### ## #######
 * 
 * #### #####-#####
 * ##
 */
public class firstShot extends GUIManager 
{
    private final int WINDOW_WIDTH = 300, WINDOW_HEIGHT = 300;
    private int x;

    private JButton one = new JButton ("1");
    private JButton two = new JButton ("2");
    private JButton three = new JButton ("3");
    private JButton four = new JButton ("4");
    private JButton five = new JButton ("5");
    private JButton six = new JButton ("6");
    private JButton seven = new JButton ("7");
    private JButton eight = new JButton ("8");
    private JButton nine = new JButton ("9");
    private JButton zero = new JButton ("0");
    private JButton multiply = new JButton ("x");
    private JButton clear = new JButton ("CE");
    
    private JTextField result = new JTextField (20);

    /**
     * Constructs interface of calculator, including textfield and buttons
     */
    public firstShot() {
        this.createWindow (WINDOW_WIDTH, WINDOW_HEIGHT, "Calculator");
        
        contentPane.add(result);
        
        JPanel curPane = new JPanel();

        curPane.add(one);
        curPane.add(two);
        curPane.add(three);
        contentPane.add(curPane);

        curPane = new JPanel ();
        curPane.add(four);
        curPane.add(five);
        curPane.add(six);
        contentPane.add(curPane);

        curPane = new JPanel ();
        curPane.add(seven);
        curPane.add(eight);
        curPane.add(nine);
        contentPane.add(curPane);
        
        curPane = new JPanel ();
        curPane.add(multiply);
        curPane.add(zero);
        curPane.add(clear);
        contentPane.add(curPane);
        
        result.setEditable(false);
    }

    /**
     * 
     */
    public void buttonClicked(JButton whichButton)
    {        
        String newResult = result.getText();
        
        if(whichButton==one) {
            newResult = result.getText() + "1";
            result.setText(newResult);
            String newResultStr = result.getText();
            x = x + 1*Math.pow(math.int 10, math.int newResultStr.length());
        } else if (whichButton==two) {
            newResult = result.getText() + "2";
            result.setText(newResult);
            x = x + 2*10^newResult.length();
        } else if (whichButton==three) {
            newResult = result.getText() + "3";
            result.setText(newResult);
            x = x + 3*10^newResult.length();
        } else if (whichButton==four) {
            newResult = result.getText() + "4";            
            result.setText(newResult);
            x = x + 4*10^newResult.length();
        } else if (whichButton==five) {
            newResult = result.getText() + "5";            
            result.setText(newResult);
            x = x + 5*10^newResult.length();
        } else if (whichButton==six) {
            newResult = result.getText() + "6";            
            result.setText(newResult);
            x = x + 6*10^newResult.length();
        } else if (whichButton==seven) {
            newResult = result.getText() + "7";            
            result.setText(newResult);
            x = x + 7*10^newResult.length();
        } else if (whichButton==eight) {
            newResult = result.getText() + "8";            
            result.setText(newResult);
            x = x + 8*10^newResult.length();
        } else if (whichButton==nine) {
            newResult = result.getText() + "9";
            result.setText(newResult);
            x = x + 9*10^newResult.length();
        } else if (whichButton==zero) {
            newResult = result.getText() + "0";            
            result.setText(newResult);
            x = x + 0*10^newResult.length();
        } else if (whichButton==multiply) {
            result.setText("");
            newResult = Integer.toString(x);
            result.setText(newResult);
        } else if (whichButton==clear) {
            result.setText("");
        }
    }
}