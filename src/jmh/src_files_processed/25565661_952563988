public class HAUS
{
    int x;
    int y;
    
    RECHTECK haus, fenster, tuere;
    DREIECK dach;
    
    public HAUS()
    {
        haus = new RECHTECK();
        haus.FarbeSetzen("gelb");
        haus.GroesseSetzen(140,180);
     
        fenster = new RECHTECK();
        fenster.FarbeSetzen("blau");
        fenster.GroesseSetzen(30,30);

        tuere = new RECHTECK();
        tuere.FarbeSetzen("braun");
        tuere.GroesseSetzen(40,60);
       
        dach = new DREIECK();
        dach.FarbeSetzen("rot");
        dach.GroesseSetzen(140,60);
        
        PositionSetzen(20,80);
    }
    void PositionSetzen()
    {
        haus.PositionSetzen
        fenster.PositionSetzen
        tuere.PoisitonsSetzen
        dach.PositionSetzen
    }
}