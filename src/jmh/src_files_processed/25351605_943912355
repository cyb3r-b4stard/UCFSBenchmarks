public class palindroma{
    public palindroma(String parola){
         int str=parola.length(); 
          boolean palindroma = true; 
         for (int i=0; i<=str/2; i++){ 
               if ( parola.charAt(i) != parola.charAt(str-1-i)){ 
                palindroma=false; 
               }
          }  
        } 
    public void stampa{
       system.out.println("La stringa inserita "+ ((!palindroma)? "non " : "") +"e' palindroma");
    }
}
 