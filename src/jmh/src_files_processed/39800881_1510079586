import java.util.*;
public class Fight
{
    public static void main()
    {
        intro();
        Character Player = new Character("player");
        Character CPU = new Character();
        
        while (Player.isDead() == false && CPU.isDead() == false)
        {
            System.out.println("Pick your move: ");
            
        }
}

public void playerMove()
{  
System.out.println("Pick your move: ");
Scanner sc = new Scanner(System.in);
String choice = sc.nextLine();
if (choice.equals("attack"))
attack(CPU);
if (choice.equals("heal spell"))
healSpell();
if (choice.equals("fireball"))
fireball(CPU);
if (choice.equals("mana up"))
manaUp();
}


   public static void intro()
    {
        System.out.println("Welcome to the battle. This is a turn-based fighting simulation between you and the computer.");
        System.out.println("Each turn, you may use:");
        System.out.println("attack: Costs 0 mana. This will do 10-20 damage to the enemy. You also have a 25% chance to hit a crit, which will double the damage of the attack!");
        System.out.println("heal spell: Costs 25 mana. This will heal your character by 30-40 health. You also have a 25% chance for the heal spell to actually be spiked, raising your max health by 25 and fully healing your character.");
        System.out.println("fireball: Costs 50 mana. This will do 100-150 damage to the enemy. Although, its splash damage will do 25-50 damage to your character."); 
        System.out.println("mana up: Costs 0 mana. This will refill your mana, but lower your max health by 25.");
        System.out.println();
        String x = new String();
        while (!x.equals("start"))
        {
        System.out.println("If you are ready to begin the battle, type in start");
        Scanner sc = new Scanner(System.in);
        x = sc.nextLine();
    }
}