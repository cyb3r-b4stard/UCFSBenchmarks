import java.util.*;
public class Secuencia
{
    private ArrayList<int> secuencia = new ArrayList<int>();
    public Secuencia(ArrayList<Integer> secuencia){
        this.secuencia=secuencia;
    }
    
    public int sumarElementosSecuencia(ArrayList<Integer> secuencia){
        return sumarElementosSecuencia(secuencia, 0);
    }
    
    private int sumarElementosSecuencia(ArrayList<Integer> secuencia, int indice){
        int resultado=0;
        if(indice<secuencia.size()){
            int numero = secuencia.get(indice);
            resultado+=numero+sumarElementosSecuencia(secuencia,indice+1);
        }
        else{
            resultado=resultado;
        }
        return resultado;
    }
}