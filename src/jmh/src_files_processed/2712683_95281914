
import acm.graphics.*;
import acm.program.*;
import acm.gui.*; 
import acm.util.*; 
import acm.io.*;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import java.applet.*;

public class ResolutionPart4 extends GraphicsProgram 
{
    public void run()
    {
        this.drawRowAlternate(0, 0, 15, 40, Color.GREEN, Color.PINK);
    }

    private void drawRow(double x, double y, int nSquares, double squareSize)
    {
        if(x < nSquares * squareSize)
        {
            this.add(new GRect(x, y, squareSize, squareSize));
        }
        this.drawRow(x + squareSize, y, nSquares, squareSize);
    }

    private void drawRowAlternate(double x, double y, int nSquares, double squareSize, Color fillColor, Color color)
    {
        if(x < nSquares * squareSize)
        {
            GRect r = new GRect(x, y, squareSize, squareSize);
            this.add(r);
            r.setColor(color);
            if()
            {
                r.setFilled(true);
                r.setFillColor(fillColor);
            }
            else
            {
                r.setFilled(false);
            }
        }
        this.drawRow(x + squareSize, y, nSquares, squareSize);
    }
}