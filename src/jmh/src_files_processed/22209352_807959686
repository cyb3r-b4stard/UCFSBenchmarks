public class Spieler{
    
    private Urne urne;

    public Spieler (int rot, int blau){
        urne = new Urne(rot, blau);
    }
    
    public int ziehenMitZuruecklegen(String farbe){
        Kugel gezogen = urne.zieheKugel();
        System.out.println(gezogen.getFarbe() );
        int count = 1;
        while( gezogen.getFarbe() != farbe){
            gezogen = urne.zieheKugel();
            System.out.println
        }
    }
}