
/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (########## ####) 
 * @####### (##.##.####)
 */
public class MeinHaus
{
    private Quadrat wand;
    private Dreieck dach;
    private Quadrat fenster1;
    private Quadrat fenster2;
    private Kreis dachfenster;
    private Quadrat tür1;
    private Quadrat tür2;
    private Kreis sonne;
    private Quadrat boden;
    private Quadrat hintergrund;

    /**
     * Constructor for objects of class MeinHaus
     */
    public MeinHaus()
    {
        hintergrund = new Quadrat();
        hintergrund.sichtbarMachen();
        hintergrund.groesseAendern(2000);
        hintergrund.vertikalBewegen(-200);
        hintergrund.horizontalBewegen(-60);
        hintergrund.farbeAendern("blau");

        sonne = new Kreis();
        sonne.sichtbarMachen();
        sonne.groesseAendern(50);
        sonne.vertikalBewegen(-40);
        sonne.horizontalBewegen(25);
        sonne.farbeAendern("gelb");

        boden = new Quadrat();
        boden.sichtbarMachen();
        boden.groesseAendern(1000);
        boden.vertikalBewegen(300);
        boden.horizontalBewegen(-60);
        boden.farbeAendern("gruen");

        wand = new Quadrat();
        wand.groesseAendern(200);
        wand.vertikalBewegen(164);
        wand.farbeAendern("lila");

        dach = new Dreieck();
        dach.groesseAendern(200,200);
        dach.farbeAendern("rot");
        dach.horizontalBewegen(110);

        fenster1 = new Quadrat();
        fenster1.groesseAendern(30);
        fenster1.vertikalBewegen(200);
        fenster1.horizontalBewegen(30);
        fenster1.farbeAendern("blau");

        fenster2 = new Quadrat();
        fenster2.groesseAendern(30);
        fenster2.vertikalBewegen(200);
        fenster2.horizontalBewegen(135);
        fenster2.farbeAendern("blau");

        dachfenster = new Kreis();
        dachfenster.groesseAendern(40);
        dachfenster.vertikalBewegen(70);
        dachfenster.horizontalBewegen(120);
        dachfenster.farbeAendern("blau");

        tür1 = new Quadrat();
        tür1.groesseAendern(50);
        tür1.vertikalBewegen(314);
        tür1.horizontalBewegen(80);
        tür1.farbeAendern("schwarz");

        tür2 = new Quadrat();
        tür2.groesseAendern(50);
        tür2.vertikalBewegen(269);
        tür2.horizontalBewegen(80);
        tür2.farbeAendern("schwarz");
        
        vorne();

    }
    public void vorne()
    {
        boden.sichtbarMachen();
        wand.sichtbarMachen();
        dach.sichtbarMachen();
        fenster1.sichtbarMachen();
        fenster2.sichtbarMachen();
        dachfenster.sichtbarMachen();
        tür1.sichtbarMachen();
        tür2.sichtbarMachen();
    }
    public void verxschiebeHaus(int weg)
    {
        wand.horizontalBewegen(weg);
        dach.horizontalBewegen(weg);
        fenster1.horizontalBewegen(weg);
        fenster2.horizontalBewegen(weg);
        dachfenster.horizontalBewegen(weg);
        tür1.horizontalBewegen(weg);
        tür2.horizontalBewegen(weg);
    }
    public void abendStimmung()
    {
        sonne.farbeAendern("rot");
        fenster1.farbeAendern("gelb");
        fenster2.farbeAendern("gelb");
        hintergrund.farbeAendern("schwarz");
    }
    public void sonnemachtnenabgang()
    {
        int h = 2;
        int v = 1;
        for(int i = 0; i<150; i3)
        { sonne.langsamVertikalBewegen(v);
          sonne.langsamHorizontalBewegen(h^16+3);
          if( i == 25)
          {
                h = 1;

          }
          if(i == 100)
          {
               h = 2;
          }
          if( i == 200)
          {
             sonne.farbeAendern("orange"); 
          }
          if( i == 270)
          {
                abendStimmung();
                vorne();
          }
        }
    }
}

