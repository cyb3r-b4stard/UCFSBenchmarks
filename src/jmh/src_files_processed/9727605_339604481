 */
import java.util.ArrayList;

public class DieCup
{
    private ArrayList<Die> terninger;

    public DieCup()
    {
        terninger = new ArrayList<Die>();
        terninger.add(new Die());
        terninger.add(new Die());
    }
    public DieCup(n)
    {
    
    }

    public void roll()
    {
        for(Die d: terninger){
            d.roll();
        }
    }

    public int getEyes()
    {
        int result = 0;
        for(Die d: terninger){
            result += d.getEyes();
        }
        return result;
    }
}