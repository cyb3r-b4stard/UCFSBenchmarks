import GLOOP.*;

public class Szene
{
char aktuelleFarbe;
    GLKamera dieKamera;
    GLLicht dasLicht;
    GLBoden derBoden;
    GLKugel dieKugel1;
    GLKugel dieKugel2;
    GLKugel dieKugel3;
    GLKegel dieNase;
    GLKugel knopf1;
    GLKugel knopf2;
    GLKugel knopf3;
    GLKugel augel;
    GLKugel auger;
    GLZylinder hutkranz;
    GLZylinder hut;

    /**
     * Konstruktor f√ºr Objekte der Klasse Szene
     */
    public Szene()
    {
       dieKamera = new GLKamera();
       dieKamera.setzePosition(0,500,700);
       dasLicht = new GLLicht();
       derBoden = new GLBoden("Schnee.jpg");
    }

    public void setzeSchneemann(){
        dieKugel1 = new GLKugel(0,20,0,100);
        dieKugel2 = new GLKugel(0,150,-20,70);
        dieKugel3 = new GLKugel(0,240,-30,40);
        dieKugel1.setzeTextur("Schnee.jpg");
        dieKugel2.setzeTextur("Schnee.jpg");
        dieKugel3.setzeTextur("Schnee.jpg");
        dieNase = new GLKegel(10,255,30,10,10);
        dieNase.drehe(180,0,0);
        dieNase.setzeFarbe(1,0,0);
        augel = new GLKugel(-10,270,35,6);
        augel.setzeFarbe(0,0,0);
        auger = new GLKugel(20,275,35,6);
        auger.setzeFarbe(0,0,0);
        knopf1 = new GLKugel(30,150,45,8);
        knopf1.setzeFarbe(0,0,0);
        knopf2 = new GLKugel(28,180,45,8);
        knopf2.setzeFarbe(0,0,0);
        knopf3 = new GLKugel(20,210,45,8);
        knopf3.setzeFarbe(0,0,0);
        hutkranz = new GLZylinder(0,280,-30,50,10);
        hutkranz.drehe(75,0,0);
        hutkranz.setzeFarbe(0,0,0);
        hut = new GLZylinder(0,300,-30,30,40);
        hut.drehe(75,0,0);
        hut.setzeFarbe(0,0,0);
        aktuelleFarbe='r'
    }
    
    public void verschiebeSchneemann(int x, int y, int z){
        dieKugel1.verschiebe(x,y,z);
        dieKugel2.verschiebe(x,y,z);
        dieKugel3.verschiebe(x,y,z);
        dieNase.verschiebe(x,y,z);
        knopf1.verschiebe(x,y,z);
        knopf2.verschiebe(x,y,z);
        knopf3.verschiebe(x,y,z);
        augel.verschiebe(x,y,z);
        auger.verschiebe(x,y,z);
        hutkranz.verschiebe(x,y,z);
        hut.verschiebe(x,y,z);
  
    }

    public void Farbewechseln(){
        if(aktuelleFarbe=='r'){
            hut.setzeFarbe(1,0,0);
            aktuelleFarbe='r'}
            else{
                hut.setzeFarbe(0,0,1);
                aktuelleFarbe='r';
        
        
            }
}