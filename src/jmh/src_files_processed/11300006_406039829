
public class Twitter
{
   private Counter morning, afternoon, evening;
   public static final int MORNING=1;
   public static final int AFTERNOON=2;
   public static final int EVENING=3;
   
   public Twitter () {
     morning = new Counter ();
     afternoon = new Counter ();
     evening = new Counter ();
   }
   public void SendMsg (int dayPeriod) {
    switch (dayPeriod) {
        case MORNING: morning.inc(); break
        case AFTERNOON: afternoon.inc(); break
        case EVENING: evening.inc(); break
    }
    }
}