    public void descuBus(){ 
       int edad=0;  JOptionPane.showMessageDialog(null, "digite la edad del pasajero");            
        if((AdolfoFanny!=null) && !AdolfoFanny.equals("") && adolfo.isNum(AdolfoFanny)){   
            edad = Integer.parseInt(AdolfoFanny);
            if(edad < 8){   
                JOptionPane.showMessageDialog(null, "Eres un niño tienes un 50% de descuento");
             }else{
                 if(edad > 9 && edad < 64){
                JOptionPane.showMessageDialog(null, "No tienes la edad del descuento y tu tarifa es normal");
              }else{
               JOptionPane.showMessageDialog(null, "Eres un adulto mayor y tienes un 30% de descuento");
              }
            }
        }
     }           
     
    
    
    public void capBus(){  
          JOptionPane.showMessageDialog(null, "Solo capacidad de 40 asientos");

        }  
        
          public void limReserva(){
          JOptionPane.showMessageDialog(null, "La reserva debe ser pagada (en el día) con un mínimo de 24 horas de antelación al viaje");
          
        }
        
        public void limTiempo(){
          JOptionPane.showMessageDialog(null, "La reserva debe ser pagada (en el día) con un mínimo de 24 horas de antelación al viaje");  
        }
        
               
        public void activar(){
          JOptionPane.showMessageDialog(null, "Una vez pagada la reserva se emite el pasaje con el nombre del cliente");
          
        }
        
