    public void menú()
    {      
        String AdolfoFanny;   int op=0;        
        do{
            AdolfoFanny = JOptionPane.showInputDialog(null,"n°0. Salir\n n°1. Reservar\n n°2. Descuentos\n n°3. Capacidad del Bus");                                                                                                                          
            if(AdolfoFanny!=null && adolfo.isNum(AdolfoFanny)){  
                op = Integer.parseInt(AdolfoFanny);
                switch(op){
                    case 1:
                        reserBus(); break; 
                    case 2:
                        descuBus(); break;
                    case 7:
                        capBus(); break;
                }    
             }  else  {
                JOptionPane.showMessageDialog(null, "Digite una opción valida....");
            }                    
        } while(op !=0);   
    }   
           
