import java.awt.Color;
import kareltherobot.*;
public class SmallCarpet extends Robot 
{
    public SmallCarpet(int street, int avenue, Direction direction, int beepers, Color color)
    {
        super(street, avenue, direction, beepers, color);
    }
    public static void main(String [] args)
    { 
        SmallCarpet a = new SmallCarpet (1, 1, East, 999, Color.red);
        a.walk4x();
    }  
    public void turnRight()
    {
        turnLeft();
        turnLeft();
        turnLeft();
    }
    public void turnAround()
    {
        turnLeft();
        turnLeft();
    }
    public void walk()
    {
    move();
    turnleft();
    if (frontIsClear())
    {
        move();
        if (frontIsClear()&(frontIsCler()&(frontIsClear())))
        {
            move();
        }
        else
        {
            move();
        }
   
    public void walk4x()
    {
        walk();
        walk();
        walk();
        walk();
    }
    public boolean wallOnRight()
    {
        turnRight(); 
        if ( frontIsClear() )
        {
                 turnLeft(); 
                 return false;  
        }
        turnLeft();  
        return true;  
    }
    static
    {
        World.reset();
        World.readWorld("SmallCarpet.kwld");
        World.setSize (10,10);
        World.setVisible (true);
        World.setDelay (1);
    }  
}