
import sum.kern.*;
/**
 * @###### 
 * @####### 
 */
public class Saz
{
    Bildschirm derBildschirm;
    Stift meinStift;

    public Saz() 
    {
        derBildschirm = new Bildschirm();
        meinStift = new Stift();
        zeichneDrachen = new Drachen
      }
    
    


    public void zeichneDrachen(double px, double py)
    {   meinStift.bewegeBis(px,py);
        meinStift.runter();
        meinStift.bewegeUm(60);
        meinStift.dreheUm(100);
        meinStift.bewegeUm(60);
        meinStift.dreheUm(100);
        meinStift.bewegeUm(60);
        meinStift.dreheUm(100);
        meinStift.hoch();
        
    
    }
    public void fuehreAus()
    {
        zeichneDrachen(120,80,40,20);
        meinStift.dreheUm(-30);
        zeichneDreieck(450,360,180,90);
        
	    
        meinStift.gibFrei();
        derBildschirm.gibFrei();
    }
}