import objectdraw.*;
import java.awt.*;
/**
 * #### ####### #### ###### ### ##### ## # ### ######.
 * 
 * @###### ##### ###### 
 * @####### ############
 */
public class sunrise extends WindowController
{
    private FilledOval moon;
    private static final double MOON_SIZE = 70;
    private FilledOval sun; 
    private static final double SUN_SIZE = 150;
    private int mouseClick;
    private Color sunset;

    public void begin(){ 
        sun = new FilledOval (0, 200, SUN_SIZE, SUN_SIZE, canvas);
        sun.setColor(Color.RED); 
        moon = new FilledOval (0, 0, MOON_SIZE, MOON_SIZE, canvas);
        moon.setColor(Color.GRAY);
        new FilledRect (0,300, 400, 100, canvas).setColor(Color.GREEN);
        new FilledRect (300, 250, 50, 50, canvas).setColor(Color.BLUE);
        new Line (320, 200, 300, 250, canvas);
        new Line (320, 200, 350, 250, canvas);

    }

    public void onMouseClick (Location point){
        mouseClick = mouseClick +1;

        int greeness = mouseClick *10;
        if (sun.getY() > 0) {
            sun.move (0, -10); 
            sun.setColor (Color
        }
        if (moon.getY() < 300) {
            moon.move (0, 10);
        }
        if (sun.getY() < 255) {
            Color sunset = new Color (255, greeness, 0);
            sun.setColor(sunset);
        }
    }
    }
