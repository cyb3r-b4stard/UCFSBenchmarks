package nz.ac.aut.programming1.homework7;

import static nz.ac.aut.programming1.homework7.Methods.*;
import nz.ac.aut.kareltherobot.Robot;

public class Q3E {
    String advanceRobot(Robot robot, int moveSpaces, boolean pickUpBeepers) {

        int beepersPickedUp;

        while(moveSpaces > 0) {
            moveRobotForwards(robot);
            --moveSpaces;
            if(pickUpBeepers == true && isItemOnGroundAtRobot()){
                pickUpItemWithRobot(robot);
                ++beepersPickedUp;
            }

        }
        String beepersPicked = int beepersPickedUp;
        return beepersPickedUp;
    }

    }