    public void start() throws IOException, InterruptedException
    {
        /**start running the program*/
        
        /**print column headers*/
        
        while(running)
        {
            run();
        }
    }
    
    private void stop()
    {
        /**stop program from running*/
    }
    
    private void run() throws IOException, InterruptedException
    {
        if(Voltage != null) {
            getVoltage();
            if(Voltage == null) {
                stop();
            } else {
                toTemperature();
                getStatus();
                displayResults();
            }
        } else {
            Thread.sleep(1000);
        }
    }
    
    private void getVoltage() throws IOException
    {
        /**get voltage input from file*/
    }
    
    private void toTemperature()
    {
        /**convert voltage to temp*/
    }
    
    private void getStatus()
