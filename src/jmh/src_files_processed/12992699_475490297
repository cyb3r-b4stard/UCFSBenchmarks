public class Trieda
{
    private String aNazovTriedy;
    private Osoba aTriednyUcitel;
    private static final int MAX_POCET_STUDENTOV = 20;
    private static int aPocetTried = 0;
    private Student[] aPoleStudentov;
    private int aPocetStudentov; 

    public Trieda(String paNazov, Osoba paTriednyUcitel){
        aNazovTriedy = paNazov;
        aTriednyUcitel = paTriednyUcitel;
        aPocetTried += 1;
        aPocetStudentov = 0;
        aPoleStudentov = new Student[MAX_POCET_STUDENTOV];
    }
    
    public static int dajPocetTried () {
        return aPocetTried;
    }
    
    public boolean pridajStudenta(Student paStudent) {
        if((aPocetStudentov == MAX_POCET_STUDENTOV) && (aPocetStudentov > MAX_POCET_STUDENTOV)) {
            return false;
        } else {
            aPoleStudentov = new Student[aPocetStudentov];
            aPoleStudentov[aPocetStudentov] = paStudent;
            aPocetStudentov +=1;
            return true;
        }
    }
    
    private int dajIndexStudenta(int paIDHladaneho) {
        int pom = 0;
        
        for(int i=0;i<aPocetStudentov;i++) {
            if (aPoleStudentov[i].dajID() == paIDHladaneho) {
                pom = i;
            } else {
                pom = -1;
            }
        }
        
        return pom;
    }
    
    public boolean pridajKreditStudentovi (int paIDKtoremu, int paHodnotaKreditu) {
    if (paIDHladaneho == aPoleStudentov[].dajIndexStudenta(paIDKtoremu)) {
    
    }
    
    } 

    }
