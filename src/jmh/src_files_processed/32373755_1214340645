
public class SUCACHARRO
{
  private int numeroMotor;
  private String modelo ;
  private String marca;
  private int añoFabricacion;
  private boolean estado;
  private int precio;
  private char direccionM;
  private char direccionH;
  private int pasajeros;
  
  public SUCACHARRO (){
    numeroMotor = 0;
    modelo = "";
    marca = "";
    añoFabricacion = 0;
    estado = true ;
    precio = 0;
    direccionM = 'M';
    direccionH = 'H';
    pasajeros = 0;
    }
    
  public SUCACHARRO (int numeroMotor, String modelo, String marca, int añoFabricacion, boolean estado, int precio, char direccionM, char direccionH, int pasajeros){
     this.numeroMotor = numeroMotor;
     this.modelo = modelo ;
     this.marca = marca ;
     this.añoFabricacion = añoFabricacion;
     this.estado = estado;
     this.precio = precio;
     this.direccionM = direccionM;
     this.direccionH = direccionH;
     this.pasajeros = pasajeros ;
      }
    public int getNumeroMotor (){
      return numeroMotor;
  } 
  
  public void setNumeroMotor ( int numeroMotor) {
    this.numeroMotor = numeroMotor;
    }
     public String getModelo (){
      return modelo;
  } 
  
  public void setModelo ( String Modelo) {
    this.modelo = modelo;
    }
     public String getMarca (){
      return marca;
  } 
  
  public void setMarca ( String marca) {
    this.marca = marca;
    }
     public int  getAñoFabricacion (){
      return añoFabricacion;
  } 
  
  public void setAño ( int añoFabricacion) {
    this.añoFabricacion = añoFabricacion;
    }
     public boolean getEstado (){
      return estado;
  } 
  
  public void setEstado ( boolean estado) {
    this.estado = estado;
    }
     public int getPrecio (){
      return precio;
  } 
  
  public void setPrecio ( int Precio) {
    this.precio = precio;
    }
     public char getDireccionM (){
      return direccionM;
  } 
  
  public void setDireccionM ( char direccionM) {
    this.direccionM = direccionM;
    }
    
     public char getDireccionH (){
      return direccionH;
  } 
  
  public void setNumeroMotor ( char direccionH) {
    this.direccionH = direccionH;
    }
     public int getPasajeros (){
      return pasajeros;
  } 
  
  public void setPasajeros ( int pasajeros) {
    this.pasajeros = pasajeros;
    }
    
    public String imprimirFicha (){
     String mensaje;
     
     mensaje += "------------------------------/n";
     mensaje += "El numero Del motor es :" + this.numeroMotor + "/n";
     mensaje += "El modelo es : " + this.modelo + "/n";
     mensaje += "La marca es : " + this.marca + "/n";
     mensaje += "El año en que se fabrico es : " + this.añoFabricacion + "/n";
     mensaje += "Su estado es : " + this.estado + "/n";
     mensaje += "El Precio del auto es $: " + this.precio + "/n";
     mensaje +=  "Su Direccion es : " +this.direccionM + "" +this.direccionH + "/n";
     mensaje += "La capacidad de pasajeros es : " +this.pasajeros + "/n";
     
     return String imprimirFicha;
    }
}