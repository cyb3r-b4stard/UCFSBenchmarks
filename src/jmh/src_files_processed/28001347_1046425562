package eps.einfacheGrafik;


/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### ######## ########### 
 * @####### ##.##.####
 */
public class Kino
{
    private Platz plaetze[][];
    public int reservieren;
    
   
    /**
     * Constructor for objects of class Kino
     */
    public Kino()
    {
        plaetze=new Platz [6][2];
        for(int i=0; i<6;i++)
        {
            for (int j=0;j<2;j++)
            {
                plaetze[i][j]=new Platz (50+i*60,50+j*60,50,50);
                plaetze[i][j].anzeigen();
                plaetze[i][j].farbeSetzen("gruen");
            }
        }
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void reservieren()
    {
        if (zustand == 0)
        {
            plaetze[i][j].reservieren;
        }
    }
}