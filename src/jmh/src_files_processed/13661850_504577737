
/**
 * ###### ########
 * 
 * #### ####### 
 * # ######## ####
 */
public class wawa
{

    private String type;
    private String size;
    private String extras;

    private static boolean bread = true;
    
    public wawa()
    {
        type = "turkey";
        size = "classic";
        extras = "none";
    }

    public wawa(String type)
    {
        this.type = type;
        size = "classic";
        extras = "none";
    }

    public wawa(String type,String size)
    {
        this.type = type;
        this.size = size;
        extras = "none";
    }

    public wawa(String type,String size,String extras)
    {
        this.type = type;
        this.size = size;
        this.extras = extras;
    }
    
    public String getType()
    {
        return this.type;
    }
    
     public String getSize()
    {
        return this.size;
    }
    
     public String getExtras()
    {
        return this.extras;
    }
    
    public void setType()
    {
        this.type;
    }
    
}