import comp102x.IO;

public class Lab02
{

    public static void multiply()
    {
        double firstNumber;
        double secondNumber;
        double thirdNumber;
        double result;
        IO.output ("Enter your first value: ");
        firstNumber = IO.inputDouble();
        IO.output ("Enter your second value: ");
        secondNumber = IO.inputDouble();
        result = firstNumber * secondNumber;
        IO.output ("The result of a * b is =" + result);
        
        
    }
    
    public static void calculateTriangleArea()
    {
        
        double firstSide;
        double secondSide;
        double thirdSide;
        double trianglArea;
        double triangP;
        IO.output ("Enter your first value: ");
        firstSide = IO.inputDouble();
        IO.output ("Enter your second value: ");
        secondSide = IO.inputDouble();
        IO.output ("Enter your third value: ");
        thirdSide = IO.inputDouble();
        
        If (firstSide == secondSide) 
            trianglArea = (Math.sqrt(3)/4) * firstSide;
         else {
                triangP = (firstSide + secondSide + thirdSide) / 2;
                trianglArea = Math.sqrt (triangP * (triangP - firstSide) * (triangP - secondSide) * (triangP - thirdSide));
            }
        
        IO.output ("The area of the triangle is =" + trianglArea);
    }
    
