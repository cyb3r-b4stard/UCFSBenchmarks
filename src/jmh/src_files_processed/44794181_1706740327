import java.util.Scanner;
import java.util.*;
import java.util.ArrayList;
/**
 * 
 * @###### #### ######### 
 * ####### ###
 */
public class ArrayBarChart
{
    public static void main() {
        
        ArrayList<Integer> list = new ArrayList<Integer> (); 
        list = readValues();
        int largest = findMax(list);
    }
    
    public static ArrayList<Integer> readValues() {
        ArrayList<Integer> al = new ArrayList<Integer> ();
        Scanner in = new Scanner(System.in);
        System.out.println("Please enter a sequence of intagers or a negative value to quit:"); 
        while (in.hasNextInt()) {
            al.add(in.nextInt());
        }
        return al;
    }
    
    public static int findMax(ArrayList<Integer> list)
    {
      
        int largest = list.get(0);
      for (int i = 1; i < list.size(); i++)
      {
         if (largest < list.get (i) ){
             largest = list.get(i);
            }
      }
      return largest;
    }
    
    public static void printOriginalValues(ArrayList<Integer> list)
    {
        for (int tmp : list ) {
            System.out.print(tmp + " "); 
        }
    }
    
    public static void printBarValues(ArrayList<Integer> list)
    {
        int length = list.size(); 
        int value = 30/length;
        for ( int i=1; i<=length; i++) {
            i* value + " ");
        }
        
        
    }
    
    public static void printBarChart(ArrayList<Integer> list)
    {
      for(int i = 0; i < list.size; i++)
      {
        for(int j=0; j<=i; j++)
        {
            System.out.print("*");
        }
        System.out.print("\n");
      } 
      
    }
}