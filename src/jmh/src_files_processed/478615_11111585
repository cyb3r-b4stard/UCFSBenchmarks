public class Ecoturismo
{
   private String destino;
   private int numeroDeDias;
   private String descripcionDeEquipo;
   private Turista turista;
   
    public Ecoturismo()
    {
        destino="por ahi";
        numeroDeDias=0;
        descripcionDeEquipo="son flojos";
        turista=new Turista();
    }

    public Ecoturismo(String destino,int numeroDeDias, String descripcionDeEquipo, Turista turista)
    {
        setDestino(destino);
        setNumeroDeDias (numeroDeDias);
        setDescripcionDeEquipo (descripcionDeEquipo);
        setTurista (turista);
    }
    
    public String getDestino(String contador)
    {
        int sinEspacio=contador.trim().length();
        return destino;
    }
    
    public void setDestino(String destino)
    {
        this.destino=destino;
    }
    
    public int getNumeroDeDias()
    {
        return numeroDeDias;
    }
    
    public void setNumeroDeDias(int numeroDeDias)
    {
        this.numeroDeDias=numeroDeDias;
    }
    
    public String getDescripcionDeEquipo()
    {
        return descripcionDeEquipo;
    }
    
    public void setDescripcionDeEquipo(String descripcionDeEquipo)
    {
        this.descripcionDeEquipo=descripcionDeEquipo;
    }
    
    public Turista getTurista()
    {
        return turista;
    }
        
    public void setTurista(Turista turista)
    {
        this.turista=turista;
    }
    
    public void minimoDeDias(int dias)
    {
       this.numeroDeDias=dias; 
       if(dias>=2)
       {
           System.out.println("Cantidad de dias aceptados");
       }
       else
       {
           System.out.println("Numero de dias insuficientes para una reserva o excursion");
        }
    }
    
    public void printTurismo()
    {
        System.out.println("Lugar de destino: "+getDestino(String contador);
        System.out.println("Cantidad de días: "+getNumeroDeDias());
        System.out.println("Descripción del equipo: "+getDescripcionDeEquipo());
        getTurista().printTurista();
    }
    
}
