import GLOOP.*;

public class Ufo{
    
    
    GLQuader r1;
    GLZylinder r11;
    GLKegelstumpf front; 
    GLQuader r2; 
    GLQuader fr2;
    GLQuader fr3;
    GLQuader r3; 
    GLQuader fl2;
    GLQuader fl3;
    GLQuader l1; 
    GLQuader r4; 
        public Ufo(){
      
       
       r1= new GLQuader (0,0,0,25,15,50);
       r11= new GLZylinder (0,5,-5,10,55);
       front= new GLKegelstumpf (0,5,-40,10,5,15);
       
       r2= new GLQuader (40,-5,-60,15,5,120);
       r2.drehe(0,0,-20);
       fr2= new GLQuader (48,-5,-60,15,5,40);
       fr2.drehe(0,0,-20);
       fr3= new GLQuader (60,-5,-20,25,5,60);
       fr3.drehe(0,0,-20);
       
       r3= new GLQuader (-40,-5,-60,15,5,120);
       r3.drehe(0,0,20);
       fl2= new GLQuader (-48,-5,-60,15,5,40);
       fl2.drehe(0,0,20);
       fl3= new GLQuader (-60,-5,-20,25,5,60);
       fl3.drehe(0,0,20);
       
       l1= new GLQuader (20,0,-25,55,5,15);
       l1.drehe(-5,-20,0);
       r4= new GLQuader (-20,0,-25,55,5,15);
       r4.drehe(5,20,0);
     }
     public v
    public void bewegeLinks(){
            r1.verschiebe(-5,0,0);
         r11.verschiebe(-5,0,0);
         front.verschiebe(-5,0,0);
         r2.verschiebe(-5,0,0);
         fr2.verschiebe(-5,0,0);
         fr3.verschiebe(-5,0,0);
         r3.verschiebe(-5,0,0);
         fl2.verschiebe(-5,0,0);
         fl3.verschiebe(-5,0,0);
         l1.verschiebe(-5,0,0);
         r4.verschiebe(-5,0,0);
         
         Sys.warte(50);
        }

    public void bewegeRechts(){  
        r1.verschiebe(5,0,0);
         r11.verschiebe(5,0,0);
         front.verschiebe(5,0,0);
         r2.verschiebe(5,0,0);
         fr2.verschiebe(5,0,0);
         fr3.verschiebe(5,0,0);
         r3.verschiebe(5,0,0);
         fl2.verschiebe(5,0,0);
         fl3.verschiebe(5,0,0);
         l1.verschiebe(5,0,0);
         r4.verschiebe(5,0,0);
         
         Sys.warte(50);
        }
    }

        
        






