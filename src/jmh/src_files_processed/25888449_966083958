public class PowursUfTooBuhtActulyMowr 
{
    public static void main(String[] args)
    {
        Scanner sc = new Scanner(System.in);
        boolean wrong = true;
        boolean wrong2 = false;
        do 
        {
            System.out.println("Enter a base number.");
            wrong = false;
            try 
            {
                long a = Long.parseLong(sc.nextLine());
            }
            catch (Exception e)
            {
                System.out.println("That is not a recognized number");
                wrong = true;
            }
            if (wrong == false)
            {
                long a = sc.nextLong();
                do
                {
                    System.out.println("Enter a power to raise this base to.");
                    try 
                    {
                        long b = sc.nextLong();
                    }
                    catch (Exception e)
                    {

                    }
                    long b = sc.nextLong();
                    if (wrong2 == false)
                        long c = 1;
                    if (a == 0 && b == 0)
                    {
                        System.out.println(a + " raised to the " + b + " power is undefined.");
                    }
                    else if (b < 0)
                    {
                        for (long x = b; x<0; x++) 
                        {
                            c = c*a;
                        }
                        double d = 1.0/c;
                        System.out.println(a + " raised to the " + b + " power is " + d + ".");
                    }
                    else
                    {
                        for (long x = b; x>0; x--)
                        {
                            c = c*a;
                        }
                        System.out.println(a + " raised to the " + b + " power is " + c + ".");
                    }
                } while (wrong2);
            }
        } while (wrong);
    }
}
