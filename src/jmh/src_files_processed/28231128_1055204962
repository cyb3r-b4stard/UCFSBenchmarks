public class Udalost {
    private Datum datum;
    private Cas cas;
    private int pocetOpakovani;
    private int intervalOpakovania;
    private String text;
    public Udalost(Datum datum, Cas cas, int pocetOpakovani, int intervalOpakovania, String text) {
        this.datum = datum;
        this.cas = cas;
        this.pocetOpakovani = pocetOpakovani;
        this.intervalOpakovania = intervalOpakovania;
        this.text = text;
    }
    
    public Datum getDatum () {
        return this.datum;
    }
    
    public Cas getCas() { 
        return this.cas;
    }
    
    public int getPocetOpakovani () {
        return this.pocetOpakovani;
    }
    
    public int getIntervalOpakovania () {
        return pocetOpakovani;
    }
    
    public String getText () {
        return text;
    }
    
    public boolean jeNaplanovanaNa(Datum den) {
        
        if (den.getRok() == datum.getRok() && den.getMesiac() == datum.getMesiac() && den.getDen() == datum.getDen()) {
            return true; 
        
        }
        
        for (i = 0; i < getPocetOpakovani(); i++) {
            this.den = this.den + getIntervalOpakovania();
            if (this.den > Mesiac.getPocetDni()) { 
                this.den = this.den - Mesiac.getPocetDni();
            }
        if (den.getRok() == datum.getRok() && den.getMesiac() == datum.getMesiac() && den.getDen() == datum.getDen()) {
            return true;
       }} else {
            return false; 
        }
    }
}