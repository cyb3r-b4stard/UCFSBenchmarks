 */
public class TextMessageV1
{
   public static void main(String[ ] args)
   {
      System.out.println("Original Message:");
      System.out.println("  Hey brother, I sent Sarah a text and she replied with a wink. I was laughing out lound because it was actually her bestfriend. My mom is calling me so I will text you later.");
      String phrase = "Hey brother, I sent Sarah a text and she replied with a wink. I was laughing out lound because it was actually her bestfriend. My mom is calling me so I will talk to you later.";
      int stringLength = phrase.length();
      System.out.println("  message length:   " + stringLength + "characters");
      
      String replace = phrase.replace("brother", "bro");
      String replace1 = phrase.replace("text", "txt");
      String replace2 = phrase.replace("laughing out loud", "lol"); 
      String replace3 = phrase.replace("wink", "*w*");
      String replace4 = phrase.replace("bestfriend", "bf");
      String replace5 = phrase.replace("talk to you later", "ttyl");
      
      System.out.println("New Message:");
      System.out.println(phrase);
      
      System.out.println("String method samples:");
      String index = phrase.indexOf("laughing");
      System.out.println("  indexOf /"B"/:                              " + index);
      String substring1 = phrase.substring(8);
      System.out.println("  substring (two parameters) first third:     " + substring1);
      String substring2 = phrase.substring(1,7);
      System.out.println("  substring (one parameters) last third:      " + substring2);
      String replaceAll = phrase.replaceAll(" ");
      System.out.println("  replaceAll RNLST's                          " + replaceAll);
      
   }   
}