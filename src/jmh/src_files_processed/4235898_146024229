class HalloWelt
{
  /*Methode ohne wiedergabe wert, nicht verÃ¤nderbar*/  
  public static void main(String[] args)
  {
    System.out.println("Ich eigne mir wieder Java an!");
    /*a wird als integer und 1 deklariert*/
    int a;
    a = 1;
    
    /* a wird ausgegeben*/
    System.out.println("Jetzt wird a angezeigt" + "\n" a);
    /* b und c werden integer gesetzt und b 1 gesetzt*/
    int b;
    b = 1;
    int c;
    /*c berechnet sich als a + b*/
    c = a + b;
    
    System.out.println(c);
    
    
    
    
  }
}
