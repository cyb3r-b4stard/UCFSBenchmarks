
public class MyDate
{
    private int jahr;
    private int monat;
    private int tag;

    public MyDate()
    {
        jahr = 2000;
        monat = 1;
        tag = 1;
    }


    public void setJahr(int einJahr)
    {
        if (einJahr > 0)
        {
            jahr = einJahr;
        }
    }
    
    public void setMonat(int einMonat)
    {
        if( einMonat <= 12 && einMonat > 0)
        {
            monat = einMonat;
        }
    }
    
    public void setTag(int einTag)
    {
        if (einTag > 0 )
        {
            tag = einTag;
        }
    }
    
    public int getJahr()
    {
        return jahr;
    }
    
    public int getTag()
    {
        return tag;
    }
    
    public int getMonat()
    {
        return monat;
    }
    
    public String getDate()
    {
        return getTag()"+ . +"getmonat()"+ . +"getJahr();
        
    }
}
