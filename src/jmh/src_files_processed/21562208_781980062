import java.util.Scanner;
public class Lab1Q4
{
    public static void main (String [] args)
    {
        Scanner kb = new Scanner (System.in);
        int height;
        System.out.println ("Enter a your height in Inches ");
        input = kb.nextInt ();
        height = input
        System.out.println ("This is your height in Inches: " + height + " In");
        height = height * 2.54
        System.out.println ("This is your height in centimeters: " + height + " cm");
        height = height * 100000
        System.out.println ("This is your height in kilometers: " + height + " km");
    }
}