public class Dependiente
{
    private Colaboradora colab;
    private String run, nombreComprador, codigoVenta;    
    private int montoPie;
    private boolean casaAsociada;
    
    public Dependiente(){
    }
    public Dependiente(Colaboradora colab, String run, String nombreComprador, String codigoVenta, int montoPie, boolean casaAsociada){
        this.colab = colab;
        this.run = run;
        this.nombreComprador = nombreComprador;
        this.codigoVenta = codigoVenta;
        this.montoPie = montoPie;
        this.casaAsociada = casaAsociada;
    }
    
    public Colaboradora getColaboradora(){
        return this.colab;
    }
    public String getRun(){
        return this.run;
    }
    public String getNombreComprador(){
        return this.nombreComprador;
    }
    public String getCodigoVenta(){
        return this.codigoVenta;
    }
    public int getMontoPie(){
        return this.montoPie;
    }
    public boolean getCasaAsociada(){
        return this.casaAsociada;
    }
    
    public void setColaboradora(Colaboradora colab){
        this.colab = colab;
    }
    public void setRun(String run){
        this.run = run;
    }
    public void setNombreComprador(String nombreComprador){
        this.nombreComprador = nombreComprador;
    }
    public void setCodigoVenta(String codigoVenta){
        this.codigoVenta = codigoVenta;
    }
    public void setMontoPie(int montoPie){
        this.montoPie = montoPie;
    }
    public void setCasaAsociada(boolean casaAsociada){
        this.casaAsociada = casaAsociada;
    }
    
    public double descuentoUF(){        
        if(colab.getPareada() == true && colab.getMetrosConstruidos() < 80.0){
            this.colab.precioUF = colab.precioUF - 5.05;            
        }else{
            this.colab.precioUF = colab.precioUF;
        }
        return colab.precioUF;
    }
    
    public void asignarCodigoVenta(String nombreComprador, String run, String direccion){ 
        int i;
        i = colab.getDireccion().charAt(999);
        this.codigoVenta = nombreComprador.substring(0,2) + run.substring(3,4) + colab.getDireccion().substring(i-3,i);
    }
    
    public double precioCasaEnPesosRestantes(){
        double precio;
        precio = (colab.precioUF - descuentoUF()) * 24045.99;
        return precio;    
    }
            
    public void mostrarCodigoYMonto(){
        System.out.println("CÃ³digo de venta: "+asignarCodigoVenta()); 
        double.monto;
        monto = precio - getMontoPie();
        System.out.println("Monto total a cancelar: "+monto;
    
}