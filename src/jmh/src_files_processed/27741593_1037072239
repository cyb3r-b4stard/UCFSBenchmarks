import java.awt.*;

class AnimationSprite extends ImageSprite{
     protected int  curImage,delay,framerate;
     protected Image[]  images;
     AnimationSprite (Image[] images, int framerate,
     double x, double y){
        super(images[0],x,y);
        setImages(images,framerate);
    }
    public void setImage (int imageIndex){
        curImage=imageIndex;
        delay=framerate;
        setImage(images[imageIndex]);
    }
    
    public void setImages([] images,int framerate){
        this.images = images;
        this.framerate = framerate;
        setImage(0);
    }
    public boolean updateSprite(){
        int w = width, height;
        if(--delay <=0)
        setImage((curImage+1)%images.lenght);
        return w != width || h != height;
    }
}
