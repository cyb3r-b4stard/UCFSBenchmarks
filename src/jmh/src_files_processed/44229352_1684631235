/** 
 * ##### ##########
 *   ########## # ## ########## ########## ### ##### ####
 */
class Rectangulo
{
    PuntoDelPlano p1,p3;
    /**
     * Método constructor
     * Recibe los puntos del plano con los valores que tomarán las propiedades
     * del nuevo rectángulo
     */
    Rectangulo(PuntoDelPlano nuevop1, PuntoDelPlano nuevop3)
    {
        this.p1=nuevop1;
        this.p3=nuevop3;
    }

    /**
     * Método que calcula la longitud de la diagonal del rectángulo
     */
    double Diagonal()
    {
        return this.p1.DistanciaA(this.p3);
    }
    
    /**
     * Método que calcula el área del rectángulo
     */
    double Area()
    {
        return this.p1.DiferenciaConAbcisaDe(p3)*this.p1.DiferenciaConOrdenadaDe(this.p3);
    }
    
    /**
     * Método que calcula el perímetro del rectángulo
     */
    double Perimetro()
    {
        return this.p1.DiferenciaConAbcisaDe(p3)*2+this.p1.DiferenciaConOrdenadaDe(this.p3)*2;
    }
    /**
     * Función que comprueba si un número real x se encuentra entre otros dos
     * (a<=x<=b  ó  b<=x<=a)
     * Este método no se aplica a ningún rectángulo por lo que debe ser ESTÁTICO
     */
    static boolean Entre(double x,double a,double b)  
    {
        return (a<=x && x<=b) || (b<=x && x<=a);
    }
    
    /**
     * Método que comprueba si un punto está en el interior del rectángulo
     */
    boolean PuntoEnElInterior(PuntoDelPlano otroPunto)
    {
        return Entre(otroPunto.x,this.p1.x,this.p3.x) && Entre(otroPunto.y, this.p1.y, this.p3.y);
    }
    /**
     * Método que calcula el punto central del rectángulo
     */
    PuntoDelPlano PuntoCentral()
    {
        PuntoDelPlano PuntoCentral;
        PuntoCentral=(this.p1.DiferenciaConAbcisaDe(this.p3)/2,this.p1.DiferenciaConAOrdenadaDe(this.p3)/2);
        return PuntoCentral;
    }
    
    /**
     * Método constructor
     * Recibe un PuntoDelPlano que representa la esquina superior izquierda del
     * nuevo rectángulo y dos valores reales que representan la altura y la
     * anchura del nuevo rectángulo
     */
    
}