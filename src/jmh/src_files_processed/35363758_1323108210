import java.util.LinkedList;
public class SongEntry
{
    
    private String uniqueID;
    private String songName;
    private String artistName;
    private int songLength;
    
    private SongEntry nextNode;
    
    
    public SongEntry()
    {
        uniqueID = "none";
        songName = "none";
        artistName = "none";
        songLength = 0;
        nextNode = null;
    }
    
    
    public SongEntry(String id, String name, String artist, int length)
    {
        uniqueID = id;
        songName = name;
        artistName = artist;
        songLength = length;
        nextNode = null;
    }
    
    
    public void insertAfter(String uniqueID, String songName, String artistName, int songLength)
    {   
        setNext(new SongEntry(uniqueID, songName, artistName, songLength));
    }    
    
    public void setNext(SongEntry node)
    {
        nextNode = node;
    }
    
    public String getID()
    {
        return uniqueID;
    }
    
    public String getSongName()
    {
        return songName;
    }
    
    public String getArtistName()
    {
        return artistName;
    }
    
    public int getSongLength()
    {
        return songLength;
    }
    
    public SongEntry getNext()
    {
        return nextNode;
    }
    
    public void printPlaylistSongs()
    {
        for (int i = 1; i <
        System.out.println("Unique ID: " + getID());
        System.out.println("Song Name: " + getSongName());
        System.out.println("Artist Name: " + getArtistName());
        System.out.println("Song Length (in seconds): " + getSongLength());
        System.out.println("");
        
        if(nextNode != null)
        {
            nextNode.printPlaylistSongs();
        }
    }    
}