package main;
import java.util.HashMap;

/**
 * ##### # ########### ## ##### ########## ####.
 * 
 * @###### ##### #########
 * @####### ####.##.##
 */
public abstract class Controller
    implements IController
{
    SubControllerUnderground SubCUnderground;
    SubControllerStreet SubCStreet;
    Model model;
    
    public Controller(){
        SubCUnderground = new SubControllerUnderground(this.model);
        SubCStreet = new SubControllerStreet(this.model);
        
    }
    
    
    public IModel getModel(){
      return model;  
    }
    
    public void setModel (IModel model){
        this.model = ((Model)model);
        
    }
    
     
    public static void getHashmap() {
        HashMap<String, SC> map = new HashMap<String, SC>();
        map.put("...", new SC(model)));
        
    }

    
    public String execute(int Key) {
        return map.get(model.getLocationOfPlayer()).run(Key);
        /**
            "Location als String codiert"
            int SchlÃ¼ssel als HASHMAP
            -> liefert Subcontroller
        */
    }

}