public class Kalorienzaehler
{
    private int bisherGegessen;
    private int kalorienanzahl;
     private double umsatz;


    /**
     * Startwert am Tagesanfang liegt bei 0 kcal. 
     */
    public Kalorienzaehler( double umsatz)
    {
        this.umsatz = umsatz;
        bisherGegessen = 0;
        kalorienanzahl = 0;
        
    }

    /**
     * Nun gibt man immer die Kalorienanzahl ein, die man gegessen hat
     */
    public void kalorienHinzufügen ( int anzahl)
    {
        if (bisherGegessen < umsatz ) {
        bisherGegessen = bisherGegessen + anzahl;
    }
    else {
          bisherGegessen = bisherGegessen + anzahl;
          System.out.println(" Sie haben Ihren Grundumsatz überschritten.");
           }
        }
            
  
    public void kalorienLöschen (int anzahl)
    {
        bisherGegessen = bisherGegessen - anzahl;
    }
    
    /** Wenn man Sport gemacht hat, gibt man hier ein, wie viele Kalorien man verbraucht hat.
     * 
     * */
     public void sportGemacht (int anzahl)
     {
         bisherGegessen = bisherGegessen - anzahl;
         }
         
         public double gesamtKalorienanzahl ( int anzahl)
         {
             return bisherGegessen;
            }  
            
            public void gibResume ()
            {if (bisherGegessen > umsatz ) {
       System.out.println(******);
        System.out.println(*);
        System.out.println(*"Sie haben heute zu viele Kalorien zu sich genommen, versuchen Sie morgen Ihren Konsum zu  reduzieren und mehr Sport zu machen.");
        System.out.println(*);
         System.out.println( ******);
}
    else {
           System.out.println( ******);
        System.out.println(*);
        System.out.println(*" Ihr Kalorienkonsum liegt heute im grünen Bereich. Weiter so!");
        System.out.println(*);
         System.out.println( ******);
           }
   
}

}