public class sixthclass
{
    public static long minDistanzN(int[][] numbers)
    {
        größeSuchen(numbers);
        long distanz = findeMinDistanz(numbers[0], numbers[i]);
        for ( int i = 0; i< numbers.length; i++)
        {
            for( int j = i; j<numbers.length; i++)
            {
                long currDisc = FindeMinDistanz(numbers[i], numbers[j]);
                if( currDisc>distanz)
                {
                    distanz = currDisc;
                }
            }
        }
        return distanz;
    }
    public static void größeSuchen(int[] [] numbers)
    {
        if(numbers.length<2)
        {
            throw new RuntimeException; 
        }
    }
    public static long findeMinDistanz(int[] numbers1, int[] numbers2)
    {
        leer(numbers1); 
        leer(numbers2); 
        long result = findeMinDistanz2(numbers1[0],numbers2);
        for(int momWert:numbers1)
        {
            long momDistanz = findeMinDistanz2( momWert, numbers2);
            if(momDistanz>result)
            {
                result = momDistanz; 
            }
        }
        return result; 
    }
    public static long findeMinDistanz2(int numberFrom1, int[] numbers2)
    {
        leer(numbers2);
        long result = distanz(numberFrom1, numbers2[0]);
        for( int i = 0; i <numbers2.length; i++)
        {
            long momDistanz=distanz(numberFrom1, numbers2[i]);
            if( momDistanz>result)
            {
                result = momDistanz; 
            }
        }
        return result; 
    }
    public static long distanz( long a, long b)
    {
        return Math.abs(a-b);
    }
    public static void leer(int[]numbers)
 {
     if(numbers.length== 0)
     {
         throw new RuntimeException();
        }
    }
}