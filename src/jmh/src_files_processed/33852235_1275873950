import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.awt.Graphics;
import java.util.Random;

public class ButtonWordPanel extends JPanel
{
    int x;
    public ButtonWordPanel()
    { setLayout(new FlowLayout());
       JButton button1 = new JButton("press");
       button1.addActionListener(new ButtonHandler());
       button1.setActionCommand("0");
       add(button1);
       JButton button2 = new JButton("Don't forget me");
       button2.addActionListener(new ButtonHandler());
       button2.setActionCommand("1");
       add(button2);
       JButton button3 = new JButton("one last one");
       add(button3);
    }
    public void paintComponent(Graphics g)
    {
        super.paintComponent(g);
        
        if (x==1) 
        
        {   Font font = new Font("Arial", Font.BOLD,40);
            g.setFont(font);
            g.drawString("Randy",(int)(Math.random()*400),(int)(Math.random()*400));}
        else if (x==2)
        {g.drawString("Randall",205,205);
            
    }
    else if (x==3)
    {g.setColor(new Color((int)(Math.random()*256),(int)(Math.random()*256),(int)(Math.random()*256)));
}

    
    private class ButtonHandler  implements ActionListener
    {
         
    
        public void actionPerformed (ActionEvent e)
        {
            
            if (e.getActionCommand().equals("0"))
            
              {
                   x = 1 ;

              }
            else if  (e.getActionCommand().equals("1"))
            {
                 x=2;

            }
            else if (e.getActionCommand().equals("2"))
            {x=3;}
            validate();
            repaint();
        }
    }
}