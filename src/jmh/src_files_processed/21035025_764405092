import java.util.ArrayList;
import javax.swing.*;

public class testTablet
{
    public static void main (String [] args)
    {
        ArrayList TabletList = new ArrayList();
        ArrayList more2k = new ArrayList();
        
        String serialNum, manufacturer, OS;
        double price;
        
        for (int i = 0; i < 3; i++)
        {
            serialNum = JOptionPane.showInputDialog("Enter serial number :");
            manufacturer = JOptionPane.showInputDialog("Enter manufacturer :");
            OS = JOptionPane.showInputDialog("Enter OS : ");
            price = Double.parseDouble(JOptionPane.showInputDialog("Enter price"));
            
            
            tablet tab = new tablet (serialNum, manufacturer, OS, price);
            TabletList.add (i, tab);
        }
        
        tablet temp1;
        for(int i = 0; i < TabletList.size(); i++)
        {
            temp1 = (tablet) TabletList.get(i);
            if(temp1.getPrice() > 2000)
            {
                more2k.add(temp1);
            }
        }
        
        tablet temp2;
        double p = 0;
        for(int i = 0; i < TabletList.size(); i++)
        {
            temp2 = (tablet) TabletList.get(i);
            if(temp2.getOS().equalsIgnoreCase("android"))
            {
                if(temp2.getPrice() > p)
                {
                   p = temp2.getPrice(); 
                }
            }
         }
         System.out.println("The Most Expensive Android is :" + p);
         
        tablet temp3;
        int count = 0;
        for(int i = 0; i < TabletList.size(); i++)
        {
             temp3 = (tablet) TabletList.get(i);
             if(temp3.getManufacturer().equalsIgnoreCase("samsung"))
             {
                 if(temp3.getOS().equalsIgnoreCase("android"))
                 {
                     count = count + 1;
                 }
             }
         
        }
        System.out.println("Number of Samsung tablet with android :" + count)
    }
    