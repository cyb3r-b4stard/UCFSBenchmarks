   public static void addition ( float x, float y)
   {
       float z = x + y;
       System.out.println("x plus y");
       System.out.println(z);
   }
   public static void subtraktion (float x, float y)
   {
       float z = x - y;
       System.out.println(x ("minus" (y)))));
       System.out.println(z);
   }
   public static void multiplikation (float x, float y)
   {
       float z = x * y;
       System.out.println(z);
   }
   public static void division (float x, float y)
   {
       float z = x / y;
       System.out.println(z);
   }
   public static void modulo (float x, float y)
   {
       float z = x % y;
       System.out.println(z);
    }
}
