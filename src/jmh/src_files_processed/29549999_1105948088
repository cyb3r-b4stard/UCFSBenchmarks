public class HandTester 
{
    public static void main(String[] args)
    {
        Shoe s = new Shoe();
        Deck d = new Deck();
        Deck d2 = new Deck();

        s.addDeck(d);
        s.addDeck(d2);

        Hand player = new Hand();
        Hand dealer = new Hand();

        s.shuffle();

        Card c1 = s.getNextCard();
        player.addCard(c1);

        Card c2 = s.getNextCard();
        dealer.addCard(c2);

        Card c3 = s.getNextCard();
        player.addCard(c3);

        Card c4 = s.getNextCard();
        dealer.addCard(c4);

        printTest(player);
        printTest(dealer);
        
        System.out.println("-----------------------------------------------------------------");

        Hand hitter = new Hand();
        s.shuffle();

        Card c5 = s.getNextCard();
        hitter.addCard(c5);

        Card c6 = s.getNextCard();
        hitter.addCard(c6);

        Card c7 = s.getNextCard();
        hitter.addCard(c7);

        Card c8 = s.getNextCard();
        hitter.addCard(c8);

        printTest(hitter);

        System.out.println("-----------------------------------------------------------------");
        s.shuffle();
        
        Hand h = new Hand();
        
        h.addCard(new Card("Hearts", "Ace", 11));
        h.addCard(new Card("Clubs", "Ace", 11));
        h.addCard(new Card("Diamonds", "Nine", 9));
        printTest(h);
        
        System.out.println("-----------------------------------------------------------------");
        
        Hand f = new Hand();
        
        f.addCard(new Card("Hearts", "Two", 2);
        f.addCard(new Card("Clubs", "Three", 3));
        f.addCard(new Card("Diamonds", "Two", 2));
        f.addCard(new Card("Clubs", "Two", 2));
        f.addCard(new Card("Diamonds", "Three", 3));
        printTest(f);
    }

    public static void printTest(Hand h)
    {
        System.out.println(h);
        System.out.println("Blackjack? - " + h.isBlackJack());
        System.out.println("Bust? - " + h.isBust());
        System.out.println("Five Card Charlie? - " + h.isFiveCardCharlie());
        System.out.println("\n");
    }
}
