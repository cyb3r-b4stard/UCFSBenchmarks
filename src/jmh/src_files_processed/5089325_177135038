import java.util.Scanner;
public class Stack 
{
    private Scanner console = new Scanner(System.in);
    private Dynamic_Node topN;
    private int last = 0;
    public void push(String a)
    {
        if (last == 0)
        {
          {
            topN = new Dynamic_Node();
          }
        }
    }
    public void pop()
    {
        if (last > 0)
        {
            last = last - 1;
            System.out.println(topN);
        }
        else
        {
            System.out.println("STACK IS EMPTY");
        }
    }
    public void peek()
    {
      if (last == 0)
      {
            System.out.println("STACK EMPTY, NULL");
      }
      else
      {
          System.out.print(topN);
      }
    }
    public void empty()
    {
        last = 0;
    }
    public void size()
    {
        System.out.println("The stack's size is:" + last);
    }
    public Stack()
 
    {
        public void menu()
        {
           String mOption = "";
           do 
            {
            System.out.println("1. Push");
            System.out.println("2. Pop");
            System.out.println("3. Peek");
            System.out.println("4. Size");
            System.out.println("5. Quit");
            mOption = console.nextLine();
            if (mOption.equals("1"))
            {
                System.out.print("Enter item to push: ");
                push(console.nextLine());
            }
            else if (mOption.equalsIgnoreCase("2"))
            {
                pop();
            }
            else if (mOption.equalsIgnoreCase("3"))
            {
                peek();
            }
            else if (mOption.equalsIgnoreCase("4"))
            {
                size();
            }
           }
           while (mOption.equals("5") == false);
        }     
    }
}