public class Bowling
{
    public int scoreGame (int [] pins)    
    {
        int totalScore = 0;
        double sum = 0;
        int x = 0;
        int y = 0;
        int z = 0;
        int a = 0;
        int b = 0;
        int score = 0;
        int score2 = 0;
        for(int i = 0; i < pins.length; i++)
        {
            if (x>0)
            {
              totalScore +=  pins[i];
              x = x - 1;
            }
            else if (y > 0)
            {
              totalScore += pins[i];
              y = y -1;
            }
            else if (z>0)
            {
                z = z - 1;
                totalScore += pins[i];
            }
            else if ( i < 10)
            {
                sum = pins[i] + pins[i+1];
                a = 1;
                if (sum == 10)
                {
                    y = 1;
                    totalScore += pins[i];
                    score += pins[i];
                }
                else
                {
                    totalScore += pins[i];
                    score += pins[i];
                }
            }
           
            else if (pins[i] == 10)
            {
               totalScore += pins[i];
               x = 2;
               a += 1;
               score += pins[i];
               if (i!= 0)
               {
               if (pins[i] == 10 && pins[i-1] == 10)
               {
                   z = 1;
                }
               }
            }
            if ( a == 1)
            {
                System.out.println("The points of the round added are: " + score + "The total score is: " + totalScore);
                a = 0;
                score = 0;
            }
            else if (b%2 == 0)
            {
               System.out.println("The points of the round added are: " + score + "The total score is: " + totalScore);
               score = 0;
            }
        }
    }
}
}
               