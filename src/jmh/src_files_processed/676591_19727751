import java.util.ArrayList;
/**
 * #### ##### ######## ### ###, ####, ###### #### ## ### ###.
 * @###### (#### #########) 
 * @####### (##-##-####)
 */
public class Player
{
    private String name;
    private int totalWin;
    private int spends;
    private int totalCost;
    private ArrayList<String> items;
    private ArrayList<Player> playerList;
        /**
     * Constructor for objects of class Player
     */
    public Player()
    {
        name = "No Name";
        spends = 0;
        totalWin = 0;
        items = new ArrayList<String>();
        playerList = new ArrayList<Player>();
    }
    
    /**
     * Method that display the player name, total win, spends and items that he won.
     */
      
    public void print()
    {
       System.out.println(" Name is: " + getName());
       System.out.println(" Your win worth total = $" + getTotalCost());
       System.out.println(" Your spends = $" + getSpends());
       System.out.println(" Your Items are: " );
       getWinItem();
       System.out.println();
       System.out.println("######################################################");
    }
    
    /**
     * This method get the name of the player
     */
    public String getName()
    {
        return name;   
    }
    
    /**
     * This method get the spends of the player
     */
    public int getSpends()
    {
        return spends;
    }
    
    /**
     * This method get total prizes cost of the player
     */
    public int getTotalCost()
    {
        return totalCost;
    }
    
    public void getWinItem()
    {
        for(int i = 0; i <= items.size()-1; i++)
            {
                            
                   System.out.println( " " + items.get(i) + ", ");
            
            }
    }
    
    /**
     * This method set the name of the player
     */
    public void setName(String playerName)
    {
        name = playerName;
    }
      
    /**
     * This method set the spends of the player
     */
    public void setSpends(int spend)
    {
        spends = spends + spend;   
    }
    
    /**
     * This method set total prizes cost of the player
     */
    public void setTotalCost(int costAdd)
    {
        totalCost = totalCost + costAdd;   
    }
    
    /**
     * method that adds a item in array list
     */
    public void setWinItem(String winItem)
    {
        items.add(winItem);   
    }
    
    /**
     * add player object to an array list
     */
    
    public void addPlayerToList(Player player)
    {
        playerList.add(player)
    
    }
    
}