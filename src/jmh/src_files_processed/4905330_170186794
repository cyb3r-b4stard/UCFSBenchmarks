class book 
{
    String author;
    String title;
    double price;
    String pubr;
    String stockPos;
    int noOfCopies;
    book(String author,String title,double price,String pubr,String stockPos,int noOfCopies)
    {
        this.author=author;
        this.title=title;
        this.price=price;
        this.pubr=pubr;
        this.stockPos=stockPos;
        this.noOfCopies=noOfCopies;
    }
}
