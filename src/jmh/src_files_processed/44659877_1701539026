public class ARBEIT
{
    WELT roboterWelt;
    ROBOTER karol;

    public ARBEIT()
    {
        roboterWelt = new WELT("Torkelwelt.kdw");
        karol = new ROBOTER(roboterWelt);        
    }

    public void Ausfuehren()
    {
        karol.VerzoegerungSetzen(50);
        
        int[] strecke = {5;4,2,2,4,5,2};
        
        /* ========== HIER gibst du dem Roboter Befehle: */
        
        {
            {
                karol.MarkeSetzen();
                karol.Schritt();
            }
            karol.RechtsDrehen();
        }
        
        /* ========== HIER enden die Befehle */

        karol.MeldungAusgeben("Ich bin zuhause?!?!");
        
    }
    
    public void ZurueckSetzen()
    {
        roboterWelt.ZurueckSetzen();
    }
}