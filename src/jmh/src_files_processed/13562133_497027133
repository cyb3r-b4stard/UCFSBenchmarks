public class Vector
{
    private double m;
    private double d;
    private double x;
    private double y;
    
    public Vector(double magnitude, double direction)
    {
        m = magnitude;
        d = direction;
    }
    
    public Vector()
    {
        this(0, 0);
    }
    
    public double getMagnitude()
    {
        return m;
    }
    
    public double getDirection()
    {
        return d;
    }
    
    public double getXComponent()
    {
        double a = Math.tan(Math.toRadians(d));
        x = Math.sqrt((m * m) / ((a * a) + 1));
        return x;
    }
    
    public double getYComponent()
    {
        double a = Math.tan(Math.toRadians(d));
        y = Math.sqrt(((a * a) * (m * m)) / ((a * a) + 1));
        return y;
    }
    
    public Vector addVector(Vector other)
    {
        m = Math.sqrt(((getXComponent * getXComponent)+(other.getXComponent() * other.getXComponent())) + ((getYComponent * getYComponent)+(other.getYComponent() * other.getYComponent())));
        d = Math.toDegrees(Math.atan((getXComponent + other.getXComponent) / (getYComponent + other.getYComponent)));
        Vector sum = (m, d);
        return sum;
    }
    
    public boolean equals(Vector other)
    {
        if (m == other.m && d == other.d) {
            return true;
        } else {
            return false;
        }
    }
    
    public String toString()
    {
        return "Magnitude: " + m + " Direction: " + d;
    }
    
}