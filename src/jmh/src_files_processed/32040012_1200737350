import java.util.Scanner;
public class Triangle
{
    public static void main (String[]args)
    {
       int a=0;
       int b=0;
       int c=0;
       int lengthOfSide=a,b,c;
       Scanner scan=new Scanner(System.in);
       System.out.println("This program calculates the area "+"and the perimeter of a given triangle");
       
       System.out.println("Please enter the three lengths of the "+"triangle's sides:");
       a=scan.nextInt();
       b=scan.nextInt();
       c=scan.nextInt();
       
       int calculatedPerimeter=a+b+c;
       double s=calculatedPerimeter/2;
       
       switch(calculatedPerimeter){
           case1:s<=a
           case2:s<=b
           case3:s<=c System.out.println("The number you entered can not be lengths "+"of the triangle's sides");
           break;
          default:System.out.println("The perimeter of the triangle is:"+calculatedPerimeter);
          double calculatedArea=Math.sqrt(s*(s-a)*(s-b)*(s-c));
          System.out.println("The area of the triangles is:"+calculatedArea);
        }
    }
}