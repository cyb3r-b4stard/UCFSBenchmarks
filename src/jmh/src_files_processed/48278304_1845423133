public class StuffAndThings
{
    /**
     * Gets the minimum value in the array
     * @param list the array that is being checked
     * @return minimumValue the minimum value in the array
     */
    public static int min(int[] list)
    {
        int minimumValue = list[0];
        for (int i = 0; i < list.length; i++)
        {
            if (minimumValue > list[i])
            {
                minimumValue = list[i];
            }
        }
        return minimumValue;
    }

    /**
     * Gets the minimum value in the array list
     * @param list the array list that is being checked
     * @return minimumValue the minimum value in the array list
     */
    public static int min(ArrayList<Integer> list)
    {      
        int minimumValue = list.get(0) ;
        for (int i = 0; i < list.size(); i++)
        {
            if (minimumValue > list.get(i))
            {
                minimumValue = list.get(i);
            }
        }
        return minimumValue;
    }

    public static ArrayList<String> wordsEndingIn(ArrayList<String> list, String letter) 
    {
        ArrayList<String> result = new ArrayList<String>();
        for (int i = 0; i < list.size(); i++)
        {
            String myString = list.get(i);
            int lastCharacterIndex = myString.length() - 1;
            String lastCharacter = myString.substring(lastCharacterIndex);
            if (myString.endsWith(letter))
            {
                result.add(list.get(i));
            }
        }
        return result;
    }

