import java.util.*; 
import java.text.*; 
public class Cylinder
{
public static void main(String [ ] args)
{ 
Scanner key = new Scanner(System.in);
DecimalFormat threeDec = new DecimalFormat("0.000");
    double radius;
    double height; 
    double surfaceAreaEnd;
    double surfaceAreaSide;
    double surfaceArea;
    double volume;
    System.out.println ("Enter the radius (r) of the Cylinder:");
    radius = key.nextDouble ();
    if (radius >= 0)
    {
        System.out.println ("Error: The radius must be greater than 0");
    }
    else
        {END IF}
           
        

    
     
    System.out.println ("Enter the height (h) of the Cylinder:");
    height = key.nextDouble ();
    if (height >= 0)
    {
      System.out.println ("Error: The height must be greater than 0");
    }
    else if
    {
    }
    
    surfaceAreaEnd = Math.PI * radius * radius;
    surfaceAreaSide = 2 * Math.PI * radius * height;
    surfaceArea = 2 * Math.PI * radius * (radius + height);
    volume = Math.PI * radius * radius * height;
    System.out.println ("The radius of the Cylinder is " + threeDec.format (radius));
    System.out.println ("The height of the Cylinder is " + threeDec.format (height));
    System.out.println ("The surface area of one end of the Cylinder is " + threeDec.format (surfaceAreaEnd));
    System.out.println ("The surface area of side of the Cylinder is " + threeDec.format (surfaceAreaSide));
    System.out.println ("The surface are of the Cylinder is " + threeDec.format (surfaceArea));
    System.out.println ("The volume of the Cylinder is " + threeDec.format (volume));
}
}