          for(int j=0;i<stock.size();j++){
              ProductoEnStock pS=stock.get(j);
              if(c.getCodInterno().equals(pS.getCodInterno())){
                 pS.restarUnidades(1);}
          }
    */   
    public void disminuirStock(Componente c){
        for(int i=0;i<stock.size();i++){
          if(c.getCodInterno.equals(stock.get(i).getCodInterno()))
             stock.get(i).restarUnidades(1);}
    }          
       
