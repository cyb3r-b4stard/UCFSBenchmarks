
/**
 * ##### # ########### ## ##### ### ####.
 * 
 * @###### (########) 
 * @####### (##.##.####)
 */
public class Car
{
    private String make;
    private String model;
    private int year;
    private double time;
    private int mileage;
    /**
     * @param make is the make of the car
     * @param model is the model of the car
     * @param year is the year the car was made
     * @param time is the time it takes the car to go 0 to 60
     */
    public Car(String make, String model, int year, double time)
    {
        this(make, model, year, time, 0);
    }
    /**
     * @param make is the make of the car
     * @param model is the model of the car
     * @param year is the year the car was made
     * @param time is the time it takes the car to go 0 to 60
     * @param mileage is the amount of miles driven
     */
    public Car(String make, String model, int year, double time, int mileage)
    {
        this.make = make;
        this.model = model;
        this.year = year;
        this.time = time;
        this.mileage = mileage;
    }
    
    /**
     * @param mileage is the amount of miles driven
     * @param time is the time it takes the car to go 0 to 60
     * @return double is the time added from extra milage
     */
    public double getTimeToAccelerate(int mileage, double time)
    {
        mileage /= 4000;
        mileage *= 0.2;
        time = time + mileage;
        return time;
    }
    
    /**
     * @return mileage is the getter for mileage
     */
    public int getMileage()
    {
        return mileage;
    }
    
    /**
     * @param miles is the miles added to mileage
     * @return miles tells you how many miles with the added
     */
    public int drive(int miles)
    {
        miles = mileage + miles;
        return miles;
    }
    
    /**
     * @return String how long it takes to go 0 to 60
     */
    public String toString()
    {
        return year + make + model, 
        + "Mileage: " mileage,
        + "Time to accelerate: " time;
    }
}