
import java.util.Scanner;
import java.text.DecimalFormat;

public class Two_Eleven
{
    public static void main(String [] args)
    {
        Scanner asker = new Scanner(System.in);
        DecimalFormat fmt = new DecimalFormat ("0.##");
        System.out.println("How many miles did the odometer read before you started driving");
        System.out.println("How many miles is it now?");
        System.out.println("How many gallons of gas did you use?");
        double num1 = asker.nextDouble();
        double num2 = asker.nextDouble();
        double num3 = asker.nextDouble();
        System.out.println("The gas mileage is " + ((num1-num2)/num3))));
    }
}