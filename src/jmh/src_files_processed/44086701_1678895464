
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (###### ##) 
 * @####### (#/##)
 */
import TurtleGraphics.Pen;
public class Circle extends AbstractShape
{
    protected double radius;
    
    public Circle()
    {
        super(); 
        radius = 1;
    }
    
    public Circle(double xLoc, double yLoc, double r)
    {
        super (xLoc,yLoc);
        radius = r;
    }
    
    public double area()
    {
        area = Math.PI * Math.pow(r, 2)
        return area;
    }
}