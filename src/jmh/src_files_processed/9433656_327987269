import javax.swing.*;
import java.awt.*;

public class calculator{
    public static void main(String[] args){
        String[] process={"Add", "Subtract", "Multiply", "Divide"};
        int choice;
        int num1;
        int num2;
        int repeat;
        int sum;
        int diff;
        int prod;
        int quo;
        int result;
        do{
            JOptionPane.showMessageDialog(null, "Welcome to iCalculate.", "iCalculator", JOptionPane.PLAIN_MESSAGE);
            choice=JOptionPane.showOptionDialog(null, "Want to add, subract, multiply or divide something?","Math", JOptionPane.YES_NO_OPTION, JOptionPane.INFORMATION_MESSAGE,null, process, " ");
            num1=Integer.parseInt(JOptionPane.showInputDialog(null, "Enter 1st digit: ","#1", JOptionPane.QUESTION_MESSAGE));
            num2=Integer.parseInt(JOptionPane.showInputDialog(null,"Enter 2nd Digit: ","#2", JOptionPane.QUESTION_MESSAGE));
            repeat=JOptionPane.showConfirmDialog(null,"Would you want something else to be math'd with?", "Please Confirm", JOptionPane.YES_NO_OPTION);
            result=;
            sum=(num1 + num2);
            diff=(num1-num2);
            prod=(num1*num2);
            quo=(num1/num2);
            if(choice==1){
                JOptionPane.showMessageDialog(null, "Adding", "Process of adding numbers", JOptionPane.WARNING_MESSAGE);
                sum=(num1 + num2);
            }
            if(choice==2){
                JOptionPane.showMessageDialog(null, "Subtraction!", "Process of subracting numbers", JOptionPane.WARNING_MESSAGE);
                diff=(num1-num2);
            }
            if(choice==3){
                JOptionPane.showMessageDialog(null, "Multiplication!", "Process of multiplying numbers", JOptionPane.WARNING_MESSAGE);
                prod=(num1*num2);
            }
            if(choice==4){
                JOptionPane.showMessageDialog(null,"Division!", "Process of dividing numbers", JOptionPane.WARNING_MESSAGE);
                quo=(num1/num2);
            }
            
            JOptionPane.showMessageDialog(null, "Your answer is:" + result);
        }while(repeat==JOptionPane.YES_OPTION);
    }
}
            
