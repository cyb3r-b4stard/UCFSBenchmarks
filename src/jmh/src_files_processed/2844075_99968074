import javax.swing.*;
import java.io.*;

public class ImageAnalysis
{   
    private byte[] content=null;
    private String filename=null;
    public ImageAnalysis(String f){filename=f;}
    
    public void analysis(String imgFileName, String outputTxtFileName)
    public void readContent(){ 
        try{
            BufferedInputStream fin=new BufferedInputStream(new FileInputStream(filename));
            int len=fin.available();
            content=new byte[len];
            fin.read(content);
            fin.close();
        } 
        catch(IOException e){e.printStackTrace();}
    }
    public void writeContent(String wfilename){
        try{
            BufferedOutputStream fout=new BufferedOutputStream(new FileOutputStream(wfilename));
            fout.write(content);
            fout.close();
        }
        catch(IOException e){e.printStackTrace();}
    }
}