import java.util.Scanner;

public class Coupons{
    public static void main (String args[]){
        
        Scanner in = new Scanner(System.in);
        
        System.out.println("Please enter the amount of your grocery purchase:");
        double amountSpent = in.nextDouble();
        
        double coupon;
        double percent;
        
        if (amountSpent <10)
        {
            coupon = amountSpent*0;
            percent = 0 + "%"
        }
        else
        {
            if (amountSpent >60)
            {
                if (amountSpent >150)
               
                {
                    if (amountSpent >210)
                    {
                        coupon = amountSpent*0.14;
                        percent = 14 + "%"
       
                    }
                    else 
                    {
                        coupon = amountSpent*0.12;
                        percent = 12 + "%"
                    }
                }   
                else
                {
                    coupon = amountSpent*0.10;
                    percent = 10 + "%"
                }
            }
            else
            {
                coupon = amountSpent*0.08;
                percent = 10 + "%"
            }
        }
                               
        System.out.printf("The expected coupon amount is: $%5.2f", coupon);  
        System.out.println("Your coupon percent is: " + percent);
            
    } 
    
}