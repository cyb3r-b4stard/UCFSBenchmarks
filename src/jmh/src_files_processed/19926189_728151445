public class Ficha
{
    private Usuario usuarioX;
    private int numeroI;
    private char servicio; 
    private boolean estado; 
    private String patente;

    public Ficha(){
        usuarioX = new Usuario();
        numeroI = 0;
        servicio = 'E';
        estado = false;
        patente = "";
    }

    public Ficha(Usuario usuarioX,int numeroI,char servicio,boolean estado,String patente){
        this.usuarioX = usuarioX;
        this.numeroI = numeroI;
        setServicio(servicio);
        this.estado = estado;
        setPatente(patente);
    }


    public Usuario getUsuarioX(){
        return usuarioX;
    }

    public int getNumeroI(){
        return numeroI;
    }

    public char getServicio(){
        return servicio;
    }

    public boolean getEstado(){
        return estado;
    }

    public String getPatente(){
        return patente;
    }


    public void setUsuarioX(Usuario usuarioX){
        this.usuarioX = usuarioX;
    }

    public void setNumeroI(int numeroI){
        this.numeroI = numeroI;
    }

    public void setServicio(char servicio){
        if (servicio == 'P' || servicio == 'E'){
            this.servicio = servicio;
        }else{
            System.out.println("El tipo de servicio debe ser 'P' o 'E'");
        }
    }

    public void setEstado(boolean estado){
        this.estado = estado;
    }

    public void setPatente(String patente){
        if (patente.length == 6){
            this.patente = patente;
        }else{
            System.out.println("La Patente debe tener un largo de 6");
        }
    }


    public void printFicha(){
        usuarioX.printUsuario();
        System.out.println("Numero Identificador :"+numeroI);
        System.out.println("Tipo de servicio :"+servicio);
        System.out.println("Estado :"+estado);
        System.out.println("Patente :"+patente);
    }

    public void listarDatos(){
        String servi;
        if (servicio == 'P'){
            servi = "Premium";
        }else{
            servi = "Estándar";
        }
        System.out.println("             FICHA AMBULANCIA            ");
        System.out.println("_________________________________________");
        System.out.println(usuarioX.getNombre()+" "+usuarioX.getEdad()+" Años patente: "+patente+", tipo:"+servi);
    }

    public boolean validarFicha(String vRut, int vNumeroI){
        if (vRut == usuarioX.getRut() && vNumeroI == numeroI){
            return true;
        }else{
            return false;
        }
    }

