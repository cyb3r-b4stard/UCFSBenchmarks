import becker.robots.*;

public class Kreuzungszaehler extends RobotSE
{
    public Kreuzungszaehler(Raum raum, int zeile, int spalte, Direction aDirection)
    {
        super(raum, 3,3,Direction.NORTH);
        
        
        
        
        
    }
    int Reihe=0;
    int Position=0;
    int anzSchritte=1;
    
    public void position_einnehmen()
    {
        while(this.frontIsClear())
        {
            this.move();
            
        }
        
        while(!this.frontIsClear())
            {
                this.turnLeft();
                Position++;
                while(this.frontIsClear())
                {
                    this.move();
            }
            if(!this.frontIsClear()&& Position==1)
                {
                    this.turnAround();
                }
            }
            
    }
    
    public void zaehle()
    {
        while(this.System.out.println(anzSchritte)==false();
        {
        while(this.frontIsClear())
        {
            this.move();
            anzSchritte++;
            
            
            while(!this.frontIsClear()&& Reihe==0)
            {
                this.turnRight();
                if(!this.frontIsClear())
                {
                    this.turnAround();
                    System.out.println(anzSchritte);
                    
                }
                this.move();
                anzSchritte++;
                this.turnRight();
                Reihe++;
                
                
                
                
                
                
                
            }
            while(!this.frontIsClear()&& Reihe==1)
                {
                    this.turnLeft();
                    if(!this.frontIsClear())
                {
                    this.turnAround();
                    System.out.println(anzSchritte);
                    
                }
                    this.move();
                    anzSchritte++;
                    this.turnLeft();
                    Reihe--;
                    
                    
                    
                }
                
        }
        
        
        
    }
}
}