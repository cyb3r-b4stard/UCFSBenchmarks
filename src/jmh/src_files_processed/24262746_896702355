public class Condicionales {

    /**
     * Dados un entero x y un char c, muestra por pantalla
     * un mensaje en funcion de los valores de x y c.
     * @param x int
     * @param c char
     */
    public static void ejercicio4(int x, char c) {
        if (x < 0 && c == 'x') { System.out.println("Caso 1"); }
        else if (x < 0 && c != 'x') { System.out.println("Caso 2"); }
        else if (x >= 0 && c == 'y') { System.out.println("Caso 3"); }
        else if (x >= 0 && c != 'y') { System.out.println("Caso 4"); }
        
        if (x < 0) {
            if (c == 'x') {System.out.println("Caso 1"); }
            else System.out.println("Caso 2"); }
        
        else {
          if (c == 'y') {System.out.println("Caso 3"); }
          else {System.out.println("Caso 4"); }
        }
    }
    
