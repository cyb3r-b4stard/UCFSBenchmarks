setzeRand(0,0,gibHoehe(),gibBreite());
}

public manipuliertesBild(Pixel[][] pFarbpixel)
{
super(pFarbpixel);
setzeRand(0,0,gibHoehe(),gibBreite());
}
public void setzeRand(int pObereHoehe,int pLinks, int pUntereHoehe, int pRechts)
{    if(pObereHoehe<0) pObereHoehe=0;
    if(pObereHoehe>gibHoehe()) pObereHoehe=gibHoehe();
    if(pLinks<0) pLinks=0;
    if(pLinks>gibBreite()) pLinks=gibBreite();
    if(pUntereHoehe<0) pUntereHoehe=0;
    if(pUntereHoehe>gibHoehe()) pUntereHoehe=gibHoehe();
    if(pRechts<0) pRechts=0;
    if(pRechts>gibBreite()) pRechts=gibBreite();
    if(pObereHoehe>pUntereHoehe) {int hilf=pObereHoehe; pObereHoehe=pUntereHoehe; pUntereHoehe=hilf;}
    if(pLinks>pRechts){int hilf=pLinks; pLinks=pRechts; pRechts=hilf;}
    
    obersteReihe=pObereHoehe;
    Rand=new int[pUntereHoehe-pObereHoehe][2];
    for(int x=0;x<Rand.length;x++)
    {
        Rand[x][0]=pLinks;
        Rand[x][1]=pRechts;
    }

}

