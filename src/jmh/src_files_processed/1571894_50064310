

import java.util.Scanner;
public class Inventory
{
    public static void main(String[]args)
    {
        int items;
        String num1;
        int z=0;
       
        Scanner scan = new Scanner(System.in);
        System.out.print("Would you like to enter a new product? Y or N: ");
        String answer = scan.next();
        answer = answer.toUpperCase();
        System.out.println();

                       
        if (answer.equals("Y"))
        {
            System.out.print("What how many items would you like to enter today? ");
            items = scan.nextInt();
            System.out.println();
            System.out.println("You are going to enter "+items+" items.");
            System.out.print("Enter item 1: ");
            num1= scan.next();
            for (z ; z<=items; z++);
            {
                System.out.print("Enter item "+z+":");
                num1= scan.next();
                if (z ==items)
                System.out.println(num1);
            }
            
        }
        else if (answer.equals("N"))
        {
            System.out.println();
            System.out.println("Goodbye!");
        }
        else
        {
            System.out.println();
            System.out.println("Please enter Y or N");
        }
        
 
    }
}
            
            