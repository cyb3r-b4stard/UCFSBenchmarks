import java.util.LinkedList;
import java.util.ListIterator;
import java.util.Scanner;
import java.util.*;

public class Employee{
 int Emp_id;
 String Emp_name;
 String Emp_Address;
 String Emp_dep;
 float Emp_salary;
 Employee Next;

Employee(int id,String name,String address,String dep,float salary){
 Emp_id=id;
 Emp_name=name;
 Emp_Address=address;
 Emp_dep=dep;
 Emp_salary=salary;

}

public int get_id(){ return Emp_id;}

public String get_name(){ return Emp_name;}

public String get_address(){return Emp_Address;}

public String get_dep(){return Emp_dep;}

public float get_salary(){return Emp_salary;} 

public void set_id(int id){  Emp_id=id;}

public void set_name(String name){  Emp_name=name;}

public void set_address(String address){ Emp_Address=address;}

public void set_dep(String dep){ Emp_dep=dep;}

public void set_salary(float salary){ Emp_salary=salary;}

public static void main(String[] args) {

 int count = 0;
 int id;
 String name;
 String address;
 String dep;
 float salary;
 int key ;
 Scanner input=new Scanner(System.in);
 LinkedList<Employee> list = new LinkedList<Employee>(); 
 Scanner scan=new Scanner(System.in);
do {
     System.out.println("1.Insert a new Employee");
     System.out.println("2.Update an Employee");
     System.out.println("3.Remove an Employee");
     System.out.println("4.Display Employees");
     System.out.println("5.Exit the program");
    
     key = input.nextInt();
   switch(key){
       
     case 1: {
            System.out.println("Enter id: "); 
            id=input.nextInt();
            System.out.println("Enter name: ");
            name=input.next();
            System.out.println("Enter address: ");
            address=input.next();
            System.out.println("Enter dep: ");
            dep=input.next();
            System.out.println("Enter salary ");
            salary=input.nextFloat();
            list.add(new Employee(id, name,address,dep,salary)); 
            
        }break;
    
       case 2:  
         { System.out.println("Enter id to Edit: "); 
            id=input.nextInt();
            ListIterator<Employee> iter = list.listIterator();
            for(;iter.hasNext();) { 
            Employee data = iter.next();
            if (data.get_id()==id) {  
                  System.out.println("Enter name: ");
                   list.get(id).set_name(input.next());
                   System.out.println("Enter address: ");
                   list.get(id).set_address(input.next());
                   System.out.println("Enter dep: ");
                   list.get(id).set_dep(input.next());
                   System.out.println("Enter salary ");
                   list.get(id).set_salary(input.nextFloat());
              
              }  
        }
       for(Employee emp : list)
        System.out.println("LinkedList:\n"+
                         "Id:  " + emp.get_id()+
                         " \nName:" + emp.get_name()+
                         " \n Adress:"+emp.get_address()+
                         "\n Salary:"+emp.get_salary()+
                         "\n Dep No:"+emp.get_dep())  ; 
       }     
        }  
       break;
    case 3: {  
         System.out.println("Enter id to delete: "); 
         id=input.nextInt();
         ListIterator<Employee> iter = list.listIterator();
         boolean flag=false; 
        for( ;iter.hasNext();) {
           Employee data = iter.next();
           if (data.get_id() == id) {  iter.remove();
                                       flag=true;  }
          }
          if (flag==false)        System.out.println("Does Not Exist !"); 
        }   break;
    case 4: 
     { 
      for(Employee emp : list)
      System.out.println("LinkedList:\n"+
                         "Id:  " + emp.get_id()+
                         " \nName:" + emp.get_name()+
                         " \n Adress:"+emp.get_address()+
                         "\n Salary:"+emp.get_salary()+
                         "\n Dep No:"+emp.get_dep())  ; 
       }break;
                   
  case 5:  System.exit(0);break;
   }
 
}while(true);
 

 }
        
    



    }
 
    
    