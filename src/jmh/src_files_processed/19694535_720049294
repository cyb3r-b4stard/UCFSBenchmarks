
public class Cliente
{
    private String nombre;
    private int contrasena;
    private String pais;
    
    public Cliente (){
        this.nombre=" ";
        this.contrasena=0;
        this.pais=" ";
    }
    
    public Cliente (String nombre, int contrasena, String pais){
        
        this.nombre=nombre;
        this.contrasena=contrasena;
        this.pais=pais;
    }
    
    public String getNombre (){
        return this.nombre;
    }
    
    public void setNombre (String Nombre){
        this.nombre=nombre;
    }
    
    public int getContrasena (){
        return this.contrasena;
    }
    
    public void setContrasena (int contrasena){
        this.contrasena=contrasena;
    }
    
    public String getPais (){
        return this.pais;
    }
    
    public void setPais (String pais){
        this.pais=pais;
    }
    
    public void mostrarDatos (){
        System.out.println ("nombre de usuario: "+this.nombre);
        System.out.println ("contraseÃ±a: "+this.contrasena);
        System.out.println ("pais: "+this.pais);
    }
    
   
    
    public boolean validarCuenta (String nombre, int contrasena){
        if (nombre==this.nombre && contrasena==this.contrasena){
            return true;
        }else{
            return false;
        }
    }
   
    public void obtenerCantidad (){
       if (habilitada==true){
           this.cliente.getcantidadDeServicios ();
        }else{
            return 0;
        }
}