public class ArrayDouble2 {
    public static void main ( String [] args ) {
        double [] numbers= new double[20];
        double TestScores = 0;
        System.print.outln "numbers"
        
        for ( int index = 0; index < numbers.length; index++ ) {
            numbers [index] = 3000-2000 - Math.random () * 200;
        }
       
        for ( int index = 0; index < numbers.length; index++ ) {
            System.out.println ( numbers[ index ] );
        }
       
        for (int index = 0; index < numbers.length; index++ )
        {
           
            if ( index ==0) {
                TestScores = numbers [ index ];
            }
           
            if( numbers [ index ] > TestScores ) {
                TestScores = numbers [ index ];
            }
        }
        System.out.println ( "\n the largest number is " + TestScores);
    }
}
    