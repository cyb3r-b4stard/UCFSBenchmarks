import java.util.ArrayList;

public class Locacao
{
    private int numero;
    private Cliente cliente;
    private Funcionario funcionario;
    private String data;
    private ArrayList<Locacao_dvd> itens_alugados;
    
    public Locacao (int numero, Cliente cliente, Funcionario funcionario, String data)
    {
        this.numero = numero;
        this.cliente = cliente;
        this.funcionario = funcionario;
        this.data = data;
        itens_alugados = new ArrayList<Locacao_dvd>();
    }
    
    public void adicionaDvd(Dvd d, int qtd)
    {
        if (d.getQuantidadeEmEstoque() >= qtd)
        {
            d.setQuantidadeEmEstoque(d.getQuantidadeEmEstoque() - qtd);
            itens_alugados.add(new locacao_dvd(d, qtd));
        }
        else
        {
            System.out.println("Não foi possível realizar a operação. Não há itens no estoque.");
        }
    }
    }
    
    
    public ArrayList<Locacao_dvd> getQuantidadeItensAlugados()
    {
        return itens_alugados.size();
    }
    
    public void setNumero(int numero)
    {
        this.numero = numero;
    }
    
    public int getNumero()
    {
        return this.numero;
    }
    
    public void setCliente(Cliente cliente)
    {
        this.cliente = cliente;
    }
    
    public Cliente getCliente()
    {
        return this.cliente;
    }
    
    public void setFuncionario(Funcionario funcionario)
    {
        this.funcionario = funcionario;
    }
    
    public Funcionario getFucnioario()
    {
        return this.funcionario;
    }
    
    public void setData(String data)
    {
        this.data = data;
    }
    
    public String getData()
    {
        return this.data;
    }
}