import java.util.*;
import java.lang.*;
public class IO
{
    Scanner keyboard = new Scanner( System.in );
    private String prompt;
    private String reply;
    public IO() {

    }

    public String replyYesNo(String prompt, String reply){
        this.prompt = prompt;
        this.reply = reply;
       System.out.println();
       System.out.print(this.prompt);
        this.reply = keyboard.nextLine().toUpperCase();
        while (this.reply != "Y" || this.reply != "N") {
            System.out.println("Invalid reply - can only be Y/N");
            replyYesNo(String prompt, String reply);
        }
        String answer = this.reply;
        return answer;
    }      
    
}