    public void parseName(String ui){

        int indexOfFirstspace=ui.indexOf(" ");

        String rightSide = ui.substring(ui.indexOf(" ")+1);
        if(ui.indexOf(",") == -1){

            stu.setFName(ui.substring(0, ui.indexOf(" ")));
            stu.setMName(rightSide.substring(0, rightSide.indexOf(" "))); 
            stu.setLName(rightSide.substring(rightSide.indexOf(" ")+ 1));
        }

        else if (rightSide.indexOf(" ") == -1){

            stu.setLName(ui.substring(0, ui.indexOf(",")));
            stu.setMName(" ");
            stu.setFName(rightSide);

        }

        else {
            stu.setFName(rightSide.substring(rightSide.indexOf(" ")));
            stu.setMName(rightside.substring(rightSide.indexOf(" ")+1));
            stu.setLName(ui.substring(ui.indexOf(",")));
        }

    }

