
/**
 * @###### 
 * @####### 
 */
public class ampel
{
    private Kreis k1;
    private Kreis k2;
    private Kreis k3;


    public ampel()
    {
        k1 = new Kreis;
        k2 = new Kreis;
        k3 = new Kreis;

        k1.groesseAendern(20);
        k1.vertikalBewegen();
        k1.horizontalBewegen();
    
        k2.groesseAendern();
        k2.vertikalBewegen();
        k2.horizontalBewegen();
    
        k3.groesseAendern();
        k3.vertikalBewegen();
        k3.horizontalBewegen();
    }

    
    
    
    public void sichtbarMachen() 
    {  k1.sichtbarMachen();
       k2.sichtbarMachen();
       k3.sichtbarMachen();
     
    

   

}


public void unsichtbarMachen()
{   k1.unsichtbarMachen();
    k1.unsichtbarMachen();
    k1.unsichtbarMachen();
}
}