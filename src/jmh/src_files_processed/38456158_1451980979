import java.util.Random;
public class Dice
{
    public static void main( String args[] )
    { 
        Random rndm = new Random();
        String tosses = "";
        for (int x = 0; x < 20; x++)
        {
             tosses = tosses + (1 + rndm.nextInt(6));
        }
        System.out.println (tosses);
        
        int maxRunStart = -1;
        int maxRunLength = 1;
        int runStart = 0;
        int runLength = 1;        
        for(int y = 0; y < tosses.length(); y++)
        {
            if(y < tosses.length()-1 && tosses.substring(i,i+1).equals(tosses.substring(i,i+2))
            {
                runLength++;
            }
            else
            {
                if(runLength > maxRunLength)
                {
                    maxRunStart = runStart;
                    maxRunLength = runLength;
                }
                runStart = i;
                runLength = 1;
            }
        }
        System.out.println("The longest run of numbers is " + maxRunLength);
        System.out.println("The starting index of the longest run of numbers is " maxRunStart);
        
        
