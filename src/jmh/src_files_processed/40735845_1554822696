
/**
 * ##### # ########### ## ##### ############ ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class TZFEOperator
{
    public static void runTZFE(){
        TZFE tzfe = new TZFE();
        int tzfearr[][] ={
            {2,0,0,8},
            {0,4,8,2},
            {0,0,8,2},
            {4,0,2,4}
        };
        tzfearr = tzfe.shiftarray(tzfearr,"left");
        String output = "";
        for(int j=0;j<4;j++){
            for(int i=0;i<4;i++){
                output = output+" "tzfearr[j][i];
            }
            System.out.println(output);
            output = "";
        }
        
    }
}