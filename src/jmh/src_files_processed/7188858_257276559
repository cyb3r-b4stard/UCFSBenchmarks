 */
public class BusStop
{

    private final int MAX=1000;
    private int _noOfBuses;
    private int size,line;
    private int totalPass=0;
    private BusArrival _buses [];

    public BusStop()
    {
        BusArrival [] _buses= new BusArrival [MAX];
        _noOfBuses=MAX;

    }

    public BusStop (int size)
    {
        BusArrival [] _buses= new BusArrival [size];
        _noOfBuses=size;
    }
    /**
     * Returns the array of buses.
     * @return the array of buses.
     */
    public BusArrival[] getBuses()
    {
        return _buses[];
    }

    /**
     * Returns the number of buses.
     * @return the number of buses.
     */
    public int getNoOfBuses()
    {
        return _noOfBuses;
    }

    /**
     * Check if it can add a paramater to the array
     * if there is a free spot in the array it will add a parameter 
     * @return true if a new parameter was added
     * @param lineNum - - The bus line number (should be between 1-99)
     * @param pass - - The number of passengers (should be between 0-70)
     * @param t - - The time of bus arrival
     */
    public boolean add (int line, int pass, Time1 t)
    {
        int i;
        for (i=0; i<= (_buses.length-1) ; i++)
        { if (_buses[i]=null)
            {
                _noOfBuses++;
                return true;
                break;
            }
        }
    }

    /**
     * removes all objects with the line number that was entered
     * if there are no pbjects like that the array will remain unchanged
     * @param line - - The bus line number (should be between 1-99)
     */
    public void removeAllLine (int line)
    {
        for (i=0; i<= _buses.length-1; i++)
        {if (_buses [i]. getLineNum()=line)
            {_buses[i]= null;
                _noOfBuses--;}
        }
    }

    /**
     * Return a string representation of all objects in BusStop.
     * (for example: "Bus no. 27 arrived at 09:24:10 with 13 passengers").
     * @override toString in class java.lang.Object
     * @return String representation of this BusStop 
     * (for example: "Bus no. 27 arrived at 09:24:10 with 13 passengers").
     */
    public String toString ()
    {
        for (i=0; i<= _buses.length-1; i++)
            System.out.println (_buses[i].toString());
    }

    /**
     * returns the total passengers that came through the statin all day
     * @return number of passengers
     */
    public int totalPassengers()
    {
        do {i=0;
            totalPass= totalPass+_buses[i].getNoOfPass();
            i++;}
        while (i<_buses.length);
    }

    /**
     * return the time of the bus that had the most passengers all day
     * @return arrical time of the bus
     */
    public BusArrival maxPassenger()
    {
        int t=0, m=0;
        do {i=0;
            if (_buses[i].getNoOfPass()>t)
                t=_buses[i].getNoOfPass();
            m=i;
            i++;}
        while (i<=_buses.length-1);
        return _buses[m].getArrivalTime();
    }

    public long getAverageTime()
    {
    }

    public int getPopularLine()
    {
    }
}
