 */
public class Slot
{
    private Scanner sc = new Scanner(System.in);
    private Random rand = new Random();
    private String oranges;
    private String cherries;
    private String melons;
    private String bars;
    private String plums;
    private int row1;
    private int row2;
    private int row3;
    private int bet;
    private int reward;

    /**
     * Constructor for objects of class Slot
     */
    public Slot()
    {
     
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void setOranges(String o)
    {
        oranges = o;
    }
    public String getOranges()
    {
        return oranges;
    }
    public void setPlums(String p)
    {
        plums = p;
    }
    public String getPlums()
    {
        return plums;
    }
      public void setMelons(String m)
    {
        melons = m;;
    }
    public String getMelons()
    {
        return melons;
    }
     public void setBars(String b)
    {
        bars = b;
    }
    public String getBars()
    {
        return bars;
    }
    public void setCherries(String c)
    {
        cherries = c;
    }
    public String getCherries()
    {
        return cherries;
    }
    public void spinWithRandom()
    {
       row1 = rand.nextInt(5)+1;
       row2 = rand.nextInt(5)+1;
       row3 = rand.nextInt(5)+1;
    }
    private void setBet(int b)
    {
        bet = b;
    }
    private int getBet()
    {
        return bet;
    }
    public void inputResponse()
    {
        System.out.println("Would you like to try your luck with my slot machine? yes or no:");
        
        boolean isYes = false;
        boolean over = false;
  
        while (!isYes && !over) {
            String input = sc.next().toLowerCase();
            if (input.equals("yes")) {
            isYes = true;
        }
        if (input.equals("no")) {
            System.out.println("\nThank you for using my slot machine. Good bye.");
            isYes = true;
            over = true;
        }
        else {
            System.out.println("\nPlease type 'yes' or 'no'.");
        }
    }
    }
    public void inputBet(int bet)
    {
        System.out.println("\nEnter the amount you want to bet: ");
        bet = sc.nextInt();
    }
    public void setRow1(int row1)
    {
        row1 = row1;
    }
    public int getRow1()
    {
        return row1;
    }
    public String getRow1(string)
    {
        getRow1();
        if(row1 == 1)
        return oranges;
        if(row1 == 2)
        return plums;
        if(row1 == 3)
        return bars;
        if(row1 == 4)
        return cherries;
        if(row1 == 5)
        return melons;
    }
     public void setRow2(int row2)
    {
        row2 = row2;
    }
    public String getRow2()
    {
        getrow2();
        if(row2 == 1)
        return oranges;
        if(row2 == 2)
        return plums;
        if(row2 == 3)
        return bars;
        if(row2 == 4)
        return cherries;
        if(row2 == 5)
        return melons;
    }
     public void setRow3(int row3)
    {
        row3 = row3;
    }
    public String getRow3()
    {
        return row3;
        if(row3 == 1)
        return "oranges";
        if(row3 == 2)
        return "plums";
        if(row3 == 3)
        return bars;
        if(row3 == 4)
        return cherries;
        if(row3 == 5)
        return melons;
    }
    public String getResult()
    {
        System.out.println("These are the three randomly selected words: " + row1 + row2 + row3);
    }
    public void setReward(int rew)
    {
        reward = rew;
    }
    public int getReward()
    {
        return reward;
    }
    public void calculateReward()
    {
        if(((row1 != row2) || (row2 != row3)) || (row1 != row3))
        reward = 0;
        System.out.println("No words match. You get $0");
        if(((row1 = row2) || (row2 = row3)) || (row1 = row3))
        reward = bet*2;
        System.out.println("Two words match. You get " + reward + " Congratulations!");
        if(row1 = row2 = row2)
        reward = bet*3;
        System.out.println("Three words match. You get " + reward + " Congratulations!");
 }
    public void inputResponse2()
    {
        System.out.println("Would you like to try your luck with my slot machine again? yes or no:");
          boolean isYes = false;
          boolean over = false;
  
        while (!isYes && !over) {
            String input = sc.next().toLowerCase();
            if (input.equals("yes")) {
            isYes = true;
            inputResponse();
        }
        if (input.equals("no")) {
            System.out.println("\nThank you for using my slot machine. Good bye.");
            isYes = true;
            over = true;
        }
        else {
            System.out.println("\nPlease type 'yes' or 'no'.");
        }

    }
}
}