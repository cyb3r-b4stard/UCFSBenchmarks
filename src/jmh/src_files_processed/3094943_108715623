import static java.lang.Math.*; 
public class Rectangle
{
    private int width; 
    private int height;
    
    public Rectangle()
    {
        height = 1;
        width = 1;
    }
    
    public Rectangle(int w, int h)
    {
        if (w <= 0 || h <= 0)
        {
            throw new IllegalArgumentException(
                "Rectangle Construction error: Width or height not positve");
        }
        else
        {
            height = h;
            width = w;
        }
    }
    
    public Rectangle(int s)
    {
        if (s <= 0)
        {
            throw new IllegalArgumentException(
                "Rectangle Construction error: Width or height not positve");
        }
        else
        {
            height = s;
            width = s;
        }
    }
    
    public double getArea()
    {
        return width * height;
    }
    
    public boolean isSquare()
    {
        int temp = (int)Math.sqrt(getArea());
        return temp == height;
    }
    
    public Rectangle quadratize()
    {
        int temp = (int)Math.sqrt(getArea());
        this = new Rectangle(temp);
        
}