import ch.aplu.jgamegrid.*;
import java.awt.*;

class Schlaeger
{        
    private int x;
    private int y; 
    private int vx;
    private int b;
    private int h=200;
    
    public Schlaeger(int n_x,int n_y,int n_vx,int n_b){
    x=n_x;
    y=n_y;
    vx=n_vx;
    b=n_b;
    }
    public void setX(int n){
    x=n;
    
    }
    public void setH(int n){
    h=n;
    
    }
    public void setY(int n){
    y=n;
    
    }
    public void setVx(int n){
    vx=n;
    
    }
   
    public void setB(int n){
    b=n;
    
    }
    public int getX(int n){
    x=n;
    
    }
    public int getY(int n){
    y=n;
    
    }
    
    public int getVx(int n){
    vx=n;
    
    }
    public int getH(int n){
    h=n;
    
    }
         
         
    
    public void links()
    {
        if (x<=0){
        }
        else {
            x=x-vx;
        }
    }
     public void rechts()
     {
         if (x<=800){
            }
         else {
                x=x+vx;
            }
    }
    



    public void zeichne( GGBackground zeichenFlaeche )
    {
        zeichenFlaeche.setPaintColor( Color.green );
        zeichenFlaeche.fillRectangle( new Point(x, y), new Point(x + b, y + h);
    }        
}