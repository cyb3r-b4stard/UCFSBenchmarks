import java.util.Random;
import java.util.Scanner;
/**
 * ##### # ########### ## ##### ############## ####.
 * 
 * @###### (###### #######) 
 * @####### (###. #, ####)
 */
public class NumberPractice
{
    public static void intPractice()
    {
        int eggs = 4;
        System.out.println("I ate " + eggs + "eggs,");
        int pets = 2;
        System.out.println("I want " + pets + "dogs.");
        Random gen = new Random();
        int die1 = gen.nextInt(6)+1;
        System.out.println("Die 1 is: " + die1);
        int die2 = gen.nextInt(6)+1;
        System.out.println("Die 2 is: " + die2);
        System.out.println("The total is: " + (die1 + die2));
        
        
    }
    public static void average()
    {
        Random gen = new Random();
        int a = gen.nextInt(101);
        int b = gen.nextInt(101);
        int c = gen.nextInt(101);
        int d = gen.nextInt(101);
        int average =(a + b + c + d) /4;
        System.out.println("The average of " + a + " , " + b + " , " + c + " , " + d + " is: " + average);
        
        
    }
    public static void mathPractice()
    {
        Random gen = new Random();
        int x = gen.nextInt(10);
        int y = gen.nextInt(10);
        System.out.println(x+ "+" +y+"="+(x+y ));
        System.out.println(x+ "-" +y+"="+(x-y ));
        System.out.println(x+ "*" +y+"="+(x*y ));
        System.out.println(x+ "/" +y+"="+(x/y ));
        System.out.println(x+ "%" +y+"="+(x%y ));
        
        
         
        }
    public static void candy(int num, int friends)
    {
        int even = num/3;
        int left = num&3;
        System.out.println("Everyone will receive " + even +"pieces of candy.");
        System.out.println("There will be " +left+ " pieces of candy left over.");
        
        
    }
    public static double mpg(int miles, double gallons)
    {
        double theMPG = miles/gallons;
        return theMPG;
    }
    public static double calcPay(double hours, double wage)
    {
        double pay = hours*wage;
        return pay;
    }
    public static double calcAreaCircle(double radius)
    {
        double area = Math.PI * radius * radius;
        return area;
    }
    public static double calcDiscount (double price, double rate)
    {
        double discount = price * / 100.0;
        return discount;
    }
   
    public static void main(String[]args)
    {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter a radius: ");
        double radius = input.nextDouble();
        double area = calcAreaCircle(radius);
        System.out.println("the area is: " + area);
        
        
        
    }
    public static void orderPractice()
    {
        Random gen = new Random();
        int a = gen.nextInt(30)+1;
        int b = gen.nextInt(30)+1;
        int c = gen.nextInt(30)+1;
        int d = gen.nextInt(30)+1;
        int problem1 =(a + b) / (c - d);
        System.out.println("(" + a + " + " + b + " ) / (" + c + " - " + d + ") = " + problem1);
        
     }
    }