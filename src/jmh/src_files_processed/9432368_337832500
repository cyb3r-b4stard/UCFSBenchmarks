import baukasten.*;
import java.awt.*;
public class Steuerung {
 public FrmZeichnen fenster; 
 
   
    public Dreieck dach;
    public Rechteck Tuer;
    public Quadrat FensterRechts;
    public Quadrat FensterLinks;
    public Quadrat wand;
    public Kreis sonne;
    public Steuerung(){
    fenster = new FrmZeichnen();
    fenster.setVisible(true);
 

public void TuerZeichnen()
 
    Tuer = new Rechteck (fenster, 150, 250, 40, 60,Color.RED);
    Tuer.zeichnen();

    
 

public void dachZeichnen()
 
    dach = new Dreieck (fenster, 100, 100, 150,Color.RED);
    dach.zeichnen();

    
 

public void wandZeichnen()
 
    wand = new Quadrat (fenster, 100, 250, 150,Color.GREEN);
    wand.zeichnen();


public void FensterRechtsZeichnen()
    FensterRechts = new Quadrat (fenster, 200, 180, 50,Color.BLUE);
    FensterRechts.zeichnen();


   public void FensterLinksZeichnen()
    FensterLinks = new Quadrat (fenster, 100, 180, 50,Color.BLUE);
    FensterLinks.zeichnen();
}

public void sonneZeichnen()
{
    
        sonne = new Kreis (fenster, 75, 50, 20,Color.YELLOW);
        sonne.zeichnen();
        



}
}
