import java.util.Scanner;

public class Princial
{
    public static void main(String [] args)
    {
     Scanner leer = new Scanner(System.in);
     
    int codigoEmpleado, sueldo, edad , opcion , x ;
    char sexo;

    System.out.println("Ingrese Codigo De Empleado");
    codigoEmpleado = leer.nextInt();
    System.out.println("Ingrese Sueldo");
    sueldo = leer.nextInt();
    System.out.println("Ingrese Edad");
    edad = leer.nextInt();
    System.out.println("Ingrese Sexo");
    sexo = leer.next() . charAt (0);
    Empleado empleado = new Empleado ( codigoEmpleado , sueldo , edad, sexo);
    
    System.out.println("1.- Aumentar Sueldo");
    System.out.println("2.- Aumentar Edad En '1' ");
    System.out.println("3.- Disminuir Estatura");
    System.out.println("4.- Mostrar Peso en gramos");
    System.out.println("5.- Retornar el sexo");
    System.out.println("6.- Salir");
    opcion = leer.nextInt();
    switch ( opcion )
    {
        case 1 : 
        System.out.println("ingrese el aumento ");
        x = leer.nextInt();
        empleado.aumentarSueldo (x);
        break;
        
        case 2 : 
        empleado.aumentarEdad();
        break;
        
        case 3 :
        empleado.retornarSueldo();
        break;
        
        case 4 :
        empleado.jubilar();
        break;
        
        default System.out.println("Error, numero ingresado no valido ")
    }
  }
}