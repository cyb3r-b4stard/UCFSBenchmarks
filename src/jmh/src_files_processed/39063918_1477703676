        v1=entrad.nextFloat ();
        System.out.println ("Introduce valor 2");
        v2=entrad.nextFloat ();
        s=v1+v2;
        r=v1-v2;
        m=v1*v2;
        d=v1/v2;
        System.out.println ("Ingresa opción");
        int op=entrad.nextInt ();
        switch (op){
            case 1:
            System.out.println ("La suma de los valores es: " + s);
