import javax.swing.*;
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Rechner
{
    private int x=1;
    private int erstezahl=0;
    private int zweitezahl=0;
    private String erstezahlString="";
    private String zweitezahlString="";
    private int ergebnis; 
    private int ausgabe;
    private int plus;
    /**
     * Constructor for objects of class Rechner
     */
    public Rechner()
    {
        public static double plus(double a, double b)
        {
            return a+b;
        }
        
        public double mal(double a, double b)
        {
            return a*b;
        }
        
        public double minues(double a, double b)
        {
            return a-b;
        }
        
        public double divi(double a, double b)
        {
            return a/b;
        }
        
        public double rest(double a, double b)
        {
            return a%b;
        }
        
        public void plusPrint (double a, double b)
        {
            System.out.println("Das Ergebnis ist "+(a+b))
        }
           
       
   
    }
    
    
    
    
    public void eingabe()
    {
        erstezahlString = JOptionPane.showInputDialog("Erste Zahl? ");
        erstezahl = Integer.parseInt(erstezahlString);
        zweitezahlString = JOptionPane.showInputDialog("Zweite Zahl? ");
        zweitezahl = Integer.parseInt(zweitezahlString);
        
        
        
        
        
    }
    
    public void ausgabe()
    {
        ergebnis = erstezahl + zweitezahl;
        
    }
    
    public void verarbeitung()
    {
        ausgabe = ergebnis = (erstezahl + zweitezahl);
    }
    
    public void eva()
    {
        eingabe();
        ausgabe();
        verarbeitung();
    }

}