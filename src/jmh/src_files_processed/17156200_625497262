import javax.swing.JOptionPane;
public class AddingMachine
{
    public static void main(String[] args)
    {
        String num = " ";
        String input = JOptionPane.showInputDialog(null, "Enter numbers to add. Press cancel to stop : ");
        
        
        
        while (input != null)
            {
                
                if (input != null)
                {
                    JOptionPane.showInputDialog(null, "Enter numbers to add. Press cancel to stop : ");
                    int number = Integer.parseInt(input);
                    number = number + number;
                    int sum = number;
                    
                }
                sum = sum
                JOptionPane.showInputDialog("Total Equals: %f", sum);
            }
        
        
        
        
    }
}