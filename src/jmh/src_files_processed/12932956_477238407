import java.awt.*;
import java.Random.;
public class Hippo extends Critter{
    private int hunger;
    private String hippo;
    private int steps = 0;
    
    public Hippo(int hunger){
        this.hunger = hunger;
        hippo = "" + hunger;
    }
    
    public Attack fight(){
        if(hunger == 0){
            return Attack.POUNCE;
        }
        else{
            return Attack.SCRATCH;
        }
    }
    
    public Direction getMove(){
        Random r = new Random();
    }
    
    public boolean eat(){
        if(hunger == 0){
            return false;
        }
        else{
            hunger--;
            return true;
        }
    }
    
    public Color getColor(){
        if(hunger <= 0){
            return Color.WHITE;
        }
        else{
            return Color.GRAY;
        }
    }
    
    public String toString(){
        return hippo;
    }
}