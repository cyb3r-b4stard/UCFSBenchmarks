import java.util.ArrayDeque;

public class LifoInventory
{
    public static void main (String[] args)
    {
        ArrayDeque<Integer> inventory = new ArrayDeque<>();
        int cost = 200;

        inventory.push(cost);
        for(int element : inventory)
        {
            cost += cost*.02;
            inventory.push(cost);
            for(int elements : inventory)
            {
                cost += cost*.02;
                inventory.push(cost);
            }
        }
        cost += cost*.02;
        inventory.push(cost);

        System.out.print("after five pushes: " + inventory + "\n" +
            "peek: " + inventory.peek() );
        System.out.print("cost of sale = " inventory.pop() );
            
            

    }
}
