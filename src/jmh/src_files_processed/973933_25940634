public class Temperature{
    private double temperature;
    private double tempChange;
    public double getTempKelvin()
    {
        return temperature + 273.15;
        
    }

    public double getTempCelsius()
    {
        return temperature;
    }

    public double getTempFarenheit()
    {
        return (temperature * 9/5) + 32;
        
    }
    public void setTempKelvin(double t)
    {
        temperature = t;
    }

    public void setTempCelsius(double t)
    {
        temperature = t;
    }

    public void setTempFarenheit(double t)
    {
        temperature = t ;
    }
    public void increaseTempKelvin(double t)
    {
        temperature = temperature + t;
    }

    public void increaseTempCelsius(double t)
    {
        temperature = temperature + t;
    }

    public void increaseTempFarenheit(double t)
    {
        tempChange = (t * 5/9) - 32
        temperature =;   
    }
    /**
     * A string representation of temperature
     * @return
     */

}