import java.util.Random;


public class Wuerfelspiel
{
    private int zahl1, zahl2, zahl3;
    private int gesamtgewinn, gewinn;
    private Random wuerfel;
   
    
    public Wuerfelspiel()
    {
        zahl1 = 0; zahl2 = 0; zahl3 = 0;
        gesamtgewinn = 0; gewinn = 0;
        wuerfel = new Random();
        
    }

    public void anzeigen()
    {
        System.out.print  (zahl1 + "   " + zahl2 + "   " + zahl3);
        System.out.println("   Letzer Gewinn: " + gewinn + "   Gesamtgewinn: " + gesamtgewinn);   
    }
    
    private void gewinnErmitteln()
    {
        gewinn = 0;
        if (zahl1==zahl2&&zahl2==zahl3) gewinn=5
            
        
        gesamtgewinn = gesamtgewinn + gewinn;        
    }
    
    public void spielen()
    {
        zahl1 = wuerfel.nextInt(6) +1;
        zahl2 = wuerfel.nextInt(6) +1;
        zahl3 = wuerfel.nextInt(6) +1;
        gewinnErmitteln();
        anzeigen();

    }
    
    public void spielen(int n){
        for (int i=0; i<n; i++) {
            spielen();
        }
    }
}