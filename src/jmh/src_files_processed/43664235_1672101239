import java.util.ArrayList;
public class showDog extends Dog
/**
 * A ShowDog is a Dog
 * All methods and instance vairables from the dog class exist here
 * 
 * ShowDog is called the subclass (child class) (derived class)
 * Dog is called the superclass (parent class) (base class)
 */
{
    private String breed;
    private ArrayList<String> awards;
    public showDog()
    {
        breed = "Shmoodle";
        awards = new ArrayList<String>();
    }

    public showDog(String name, int age, String breed)
    {
        super(name,age); 
        awards = new ArrayList<String>();
        this.breed = breed;
        /**
         * Age and Name have private access and cannot be directly accessed in the subclass
        setAge(age);
        setName(name);
        */
        
    }

    public void addAward(String someAward)
    {
        awards.add(someAward);
    }

    public String toString()
    {
        String a = "";
        for(String x: awards)
        {
            a += x + ", ";
        }
        return super.toString() + "\nBreed: " + breed + "\nAwards: " + a.substring(0,a.length()-2);
    }
    
    public boolean equals(Object other)
    {
        if(!(other instanceof showDog))
            return false;
        
        showDog temp = (showDog)other; 
        return this.name.equals(temp.name) && this.age == temp.age && this.breed.equals(temp.breed);
}