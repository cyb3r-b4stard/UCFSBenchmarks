import becker.robots.*;


public class SpurenLeger extends Robot
{
        
    public SpurenLeger(City aCity, int aStreet, int anAvenue, Direction aDirection)
    {
       
        super(aCity, aStreet, anAvenue, aDirection);
     
       / for(int i = 1; i<= 5; i++)
        {
            this.makeThing(i, 5);

        }
    }

    public void hinterlasseSpur()
    {
            
            if(this.countThingsInBackpack() > 0)
            {
               this.putThing(); 
            }
            
    }
    
    
}