class mcd {
   /**necesito los dos números y la variable para acumular mcd*/
   int numero1, numero2, mcd=1;

   /**método para calcular el MCD de dos números enteros*/
    int calculoMCD (int numero1, int numero2) {
        int auxiliar=2;/*el auxiliar me sirve para ir buscando los divisores de los números*/


        do{
            /**primer caso, es un primo divisor de ambos números*/
                  if ((numero1/auxiliar ==0) && (numero2/auxiliar==0) && (comprobacionPrimo(auxiliar)==true))
                  {
                  mcd=mcd*auxiliar;
                  numero1=numero1/auxiliar;
                  numero2=numero2/auxiliar;
                  }
                  /**segundo caso, es un primo divisor de numero1*/
                    else if ((numero1/auxiliar==0) && (comprobacionPrimo(auxiliar)==true))
                    {
                     numero1=numero1/auxiliar;
                     mcd=mcd*auxiliar;
                    }
                    /**tercer caso, es un primo divisor de numero2*/
                        else if ((numero2/auxiliar==0) && (comprobacionPrimo(auxiliar)==true))
                        {
                            numero2=numero2/auxiliar;
                            mcd=mcd*auxiliar;
                        }
                        /**si no es primo, ni divisor de mis números, no me sirve. Pruebo con el siguiente*/
                        else auxiliar=++auxiliar;


        } while ((auxiliar<numero1) && (auxiliar<numero2));
    }

    public static void main (String[] args){
        int numero1, numero2;
        System.out.println ("Programita para calcular el mcd de dos números");
        do {
            numero1 = Terminal.leeEntero ("Dame un primer número mayor que 1 ");
            numero2 = Terminal.leeEntero ("Dame un segundo número mayor que 1 ");   
        }while ((numero1<2) || (numero2<2));


        mcd = calculoMCD(numero1,numero2);
        System.out.println ("El mcd de" +numero1 +numero2 "es" +mcd);

    }
}
    







