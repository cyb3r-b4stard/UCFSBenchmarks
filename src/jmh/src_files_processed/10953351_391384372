public class Teacher
{
    String name;
    int rmnum;
    String subject;
    
    public Teacher()
    {
        name = "Jenkins";
        rmnum = 160;
        subject "History";
        
        
    }
    
    public Teacher(String theName, int room, String theSubject)
    {
        name = theName;
        rmnum = room;
        subject = theSubject;
        
        
    }
    
    public String toString()
    {
        return "The teacher's name is " + name + " and he teaches " + subject + " in room " + rmnum;
        
    }
    
}