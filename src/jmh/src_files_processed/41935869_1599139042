import java.util.Scanner;

public class PigLatin
{
   public static boolean isVowel(char v)
   {
       if (v == 'a' || v == 'e' || v == 'i' || v == 'o' || v == 'u' || v == 'y' ||
           v == 'A' || v == 'E' || v == 'I' || v == 'O' || v == 'U')
       {
           return true;
       }
       else
       {
           return false;
       }
   }
   
   public static int vowelFinder(String s)
   {
       int wordTracker = 0;
       while(!isVowel(s.charAt(wordTracker)))
       {
           wordTracker++;
       }
       return wordTracker;
   }
    
   public static void pig(String s)
   {
       if (isVowel(s.charAt(0)))
       {
           System.out.print(s + "ay" );
       }
       else
       {
           int vf = vowelFinder(s);
           System.out.print(s.substring(vf) + s.substring(0, vf) +
                              "ay" );
       }
   }
   
   public static void pun(String s)
   {
       if (s.endsWith("."))
   {
       System.out.print(".");
   }
   }
   
   public static boolean rem(String s)
   {
       s.remove(".")
       return System.out.print(" ");
   }
   
   public static void main()
   {
       System.out.println("Please type a word.");
       Scanner k = new Scanner(System.in);
       while(k.hasNext())
       {    
           String s = k.next();
           pig(s);
           pun(s);
       }
   }
}