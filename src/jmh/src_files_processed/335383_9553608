import java.util.Scanner;
public class Leg
{
    private int position;
    
    public Leg(int position)
    {
    }
    
    public void step()
    {
        position = position + 1;
    }
    
    public int getPosition()
    {
        return position;
    }
    
    public void String toString();
    {
        System.out.print("Leg at " + position);
    }
}