public class Tarjeta{
    private int codigo;
    private String fechaEmision;
    private int dias;
    private boolean tarjEstado;
    private int clave;
    private int descuento;
    private Alumno alumno;
    
    Tarjeta(){
        
    }
    Tarjeta(int codigo, String fechaEmision, int dias, boolean tarjEstado, int clave, int descuento, Alumno alumno){
        setCodigo(codigo);
        setFechaEmision(fechaEmision);
        setDias(dias);
        setTarjEstado(tarjEstado);
        setClave(clave);
        setDescuento(descuento);
        setAlumno(alumno);
    }
    
    int getCodigo(){
        return codigo;
    }
    void setCodigo(int codigo){
        this.codigo=codigo;
    }
    
    String getFechaEmision(){
        return fechaEmision;
    }
    void setFechaEmision(String fechaEmision){
        this.fechaEmision=fechaEmision;
    }
    
    int getDias(){
        return dias;
    }
    void setDias(int dias){
        this.dias=dias;
    }
    
    boolean getTarjEstado(){
        return tarjEstado;
    }
    void setTarjEstado(boolean tarjEstado){
        this.tarjEstado=tarjEstado;
    }
    
    int getClave(){
        return clave;
    }
    void setClave(int clave){
        this.clave=clave;
    }
    
    int getDescuento(){
        return descuento;
    }
    void setDescuento(int descuento){
        this.descuento=descuento;
    }
    
    Alumno getAlumno(){
        return alumno;
    }
    void setAlumno(Alumno alumno){
        this.alumno=alumno;
    }
    
    void printDatos(){
        alumno.printDatos();
        System.out.println("");
        System.out.println("------ DATOS DE TARJETA ------");
        System.out.println("");
        System.out.println("Codigo: "+getCodigo());
        System.out.println("Fecha de Emision: "+getFechaEmision());
        System.out.println("Dias transcurridos: "+getDias());
        System.out.println("Estado de Activaci√≥n: "+getTarjEstado());
        System.out.println("Clave: "+getClave());
        System.out.println("Descuento: "+getDescuento());
    }
    
    void activarTarj(){
        if(getAlumno().getEstado()==true && getTarjEstado()==true){
            getDescuento()==15;
        }
        
    }
    
}