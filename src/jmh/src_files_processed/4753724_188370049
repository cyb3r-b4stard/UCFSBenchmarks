
import java.awt.Color;
import javax.swing.JPanel;
import javax.swing.JFrame;
import java.util.*
import info.gridwor;ld.grid.*;
import info.gridworld.grid.Location;

public class ColorDriver
{
    public static void main(String[] args)
    {
        Grid<Color> gr = new BoundedGrid<Color>(10,10);
        ColorDisplay screen = new ColorDisplay(gr);
        ArrayList<Location> temp = new ArrayList<Location>();
        while (gr.getOccupiedLocations().size() < 10)
        {
            Location A = new Location((int)(Math.random()*gr.getNumRows()), (int)(Math.random()*gr.getNumCols()));
            gr.put(loc, Color.RED);
            temp.add(loc);
        }
        try
        {
            thread.sleep(2000);
        }
        catch (InterruptedException ex){};

        for (int i = 0; i<temp.size(); i++)
        {
            ArrayList<Location> A = gr.getEmptyAdjacentLocation(temp.get(i));
            for (int j = 0; j < A.size(); j++)
            {
                gr.put((j), Color.RED);
            }
        }
        screen.display();  
    }
}

