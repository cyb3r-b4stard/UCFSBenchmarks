import javax.swing.*;
import java.awt.*;

class Paleta extends JPanel implements Runnable
{
  private int raton = 0;
  private int PositionX = 21, PositionY = 150;
  private int xd, yd;
  private Thread runner;
  public ppDraw()
  {
    setBackground(Color.WHITE);
    xd = 0;
    yd = 0;
    runner = new Thread(this);
    runner.start();
  }
  public void paintComponent(Graphics g)
  {
    super.paintComponent(g);
    g.fillRect(0,raton,9,80);
    g.setColor(Color.GREEN);
  }
  public void setRaton(int y)
  {
    raton = y;
    if (y < 0)
       raton = 0;
    if (y > 330)
       raton = 330;
  }
  public int getRaton()
  {
    return raton;
  }
  public void start()
  {
    runner.start();
  }
