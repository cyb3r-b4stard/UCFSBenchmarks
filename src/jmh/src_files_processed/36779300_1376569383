 */
public class ControladorTemporal
{
    public void probar (String palabraMagica)
    {
        final String MENSAJE = "Ingrese una palabra";
        final String TITULO = "Sebastian Chaves";
        final Arraylist<String> OPCIONES = "", "a";
        boolean verdadero = true;
        Interfaz interfaz = new Interfaz();
        do
        {
            String palabraIngresada = interfaz.inputDialog( "hola",MENSAJE);
            if(palabraIngresada.equals(palabraMagica))
            {
                verdadero = false;
            }
        }while(verdadero == true);
        
    
        }
    }