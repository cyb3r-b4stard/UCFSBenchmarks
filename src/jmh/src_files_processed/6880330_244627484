
import java.util.Scanner;
import java.io.FileInputStream;
import java.io.FileNotFoundException;

public class Golf {

    public static void main(String[] args) {
        
        Scanner inputFile = null; 
        try {
            inputFile = new Scanner(new FileInputStream("golfScores.txt"));
        }
        catch (FileNotFoundException e) {
            System.out.println("File not found or not opened.");
            System.exit(0);
        }
        
        computeScores(inputFile);
    }
    
    public static void computeScores(Scanner file) {
        int numGolfers = file.nextInt();
        String golferName;
        float avgScore;
        int totalScore;
        int parScore;
        
        System.out.println("Number of golfers: "+numGolfers);
        System.out.println("NAME   SCORE   TO PAR");
        System.out.println("----   -----   ------");
        
        for(int golfers = 0; golfers < numGolfers; golfers++)
        {
        golfername = file.next();
        totalscore=0;
        
        for(int a = 0; i < 18; i++)
            {
               totalScore += file.nextInt();
            }
        parScore = totalScore - 72;
        System.out.println(golferName + "   " + totalScore + "   " + parScore);  
    }
}