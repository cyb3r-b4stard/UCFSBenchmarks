/**
 * to compute the fuel economy
 * 
 * @author (Makayla Plants) 
 * @version (1 1/13/2015)
 *)import java.until.Scanner;
public class FuelEconomy
{
    public static void main (String [] args)
    {
        Scanner scan = new Scanner( System.in );
        double MilesTraveled;
        double GallonsRequired;
        
        System.out.print("Enter the Miles Traveled: ");
        MilesTraveled = scan.nextDouble();
        System.out.print("Enter the Gallons required: ");
        GallonsRequired = scan.nextDouble();
        
        System.out.println("MilesTraveled: " + MilesTraveled + " total cost:" +
        (MilesTraveled + MilesTraveled*0.06 + MilesTraveled*GallonsRequired) );
    }
}