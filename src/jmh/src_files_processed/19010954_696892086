
/**
 * ##### # ########### ## ##### ############### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class ExamPrintNumber
{
    public static void main(int length) {

    for (int i = 0; i <= length; i++) {
        for (int j = length; j > i; j--) {
            System.out.print("  ");
        }
            System.out.print(j + " ");
        }
        for (int j = 1; j <= i; j++) {
            System.out.print(j + " ");
        }
        System.out.println();
    }
}
    }

    