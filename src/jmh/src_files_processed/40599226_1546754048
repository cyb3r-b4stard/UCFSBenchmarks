 */
public class Name
{
    private String first; 
    private String middle; 
    private String last; 
    private String initials; 
    
    /**
     * Constructor defines the String variables
     * for each part of a person's name.
     */
    public Name()
    {
        first = "Ludwig";
        middle = "Van";
        last = "Beethoven";
        initials = "LVB";
    }
    
    /** 
     * Returns true if calling name same as sent name
     */
    public boolean equals (Name otherName)
    {
     if (Name == otherName)
     {
         return true;
    }
}

    /**
     * Returns the first name
     */
    public String getFirst()
    {
        return first;
    }
    
    /**
     * Returns the middle name
     */
    public String getMiddle()
    {
        return middle;
    }
    
    /**
     * Returns the last name
     */
    public String getLast()
    {
        return last;
    }
    
    /**
     * Returns the person's initials
     */
    public String initials()
    {
        return initials;
    }
    
    /**
     * Returns full name
     */
    public String firstMiddleLast()
    {
        return first + " " + middle + " " + last;
    }
    
    /**
     * Returns the number of characters in the full name, not including spaces
     */
    public int length()
    {
        return
   }
    
    /**
     * Returns last name, and then first and middle names
     */
    public String lastFirstMiddle()
    {
        return last + ", " + first + " " + middle;
    }
    
    /**
     * Returns only first and last names
     */
    public String toString()
    {
        return first + " " + last + "   " + initials;
    }
}