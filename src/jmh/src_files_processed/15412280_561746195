import java.awt.*;
import javax.swing.*;

public class CadastroContatoFrame
{
    private JFrame frame;
    public CadastroContatoFrame()
    {
        frame = new JFrame("Cadastro de Contatos");
        frame.setPreferredSize(new Dimension(400,500));
        frame.setResizable(false);
        Container areaConteudo = frame.getContentPane();
        SpringLayout layout = new SpringLayout();
        areaConteudo.setLayout(layout);
        JTextField txtNome = new JTextField("", 25);
        areaConteudo.add(txtNome);
        layout.putConstraint(SpringLayout.EAST, txtNome, -5, SpringLayout.EAST, areaConteudo);
        layout.putConstraint(SpringLayout.NORTH, txtNome, 5, SpringLayout.NORTH, areaConteudo);
        JLabel lblNome = new JLabel("Nome:");
        areaConteudo.add(lblNome);
        layout.putConstraint(SpringLayout.EAST, lblNome, -5, SpringLayout.WEST, txtNome);
        layout.putConstraint(SpringLayout.NORTH, lblNome, 10, SpringLayout.NORTH, areaConteudo);
        JLabellblTelefone=newJLabel("Telefones:");
        areaConteudo.add(lblTelefone);
        layout.putConstraint(SpringLayout.EAST,lblTelefone,0,SpringLayout.EAST,lblNome);
        layout.putConstraint(SpringLayout.NORTH,lblTelefone,10,SpringLayout.SOUTH,txtNome);
        
        JTextFieldtxtTelefone=newJTextField("",15);
        areaConteudo.add(txtTelefone);
        layout.putConstraint(SpringLayout.WEST,txtTelefone,5,SpringLayout.EAST,lblTelefone);
        layout.putConstraint(SpringLayout.NORTH,txtTelefone,5,SpringLayout.SOUTH,txtNome);
        
        JButtonbtnAddTelefone=newJButton("Adicionar");
        areaConteudo.add(btnAddTelefone);
        layout.putConstraint(SpringLayout.WEST,btnAddTelefone,5,SpringLayout.EAST,txtTelefone);
        layout.putConstraint(SpringLayout.NORTH,btnAddTelefone,5,SpringLayout.SOUTH,txtNome);
        
        JList<Long>lstTelefones = newJList<Long>();
        lstTelefones.setSelectionMode(ListSelectionModel.SINGLE_INTERVAL_SELECTION);
        lstTelefones.setLayoutOrientation(JList.VERTICAL_WRAP);
        lstTelefones.setVisibleRowCount(C1);
        
        JScrollPanelcrTelefones=newJScrollPane(lstTelefones);
        lcrTelefones.setPreferredSize(newDimension(190,60));
        areaConteudo.add(lcrTelefones);
        layout.putConstraint(SpringLayout.EAST,lcrTelefones,-5,SpringLayout.WEST,btnAddTelefone);
        layout.putConstraint(SpringLayout.NORTH,lcrTelefones,5,!SpringLayout.SOUTH,!txtTelefone);
    }
}