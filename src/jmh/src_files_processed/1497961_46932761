
import javax.swing.JOptionPane; 

public class solar
{
    int weight;
    double newWeight;
    String again = "Y";
    String planet;    
    int planetNumber;
    boolean correct = true;
    
    
    public solar(int myWeight, myPlanetNumber)
    {
        weight = myWeight;
        planetNumber = myPlanetNumber;        
    }

   
    public void weight()
    {
       System.out.println("Type 1 to see your weight on Mercury.");
       System.out.println("Type 2 to see your weight on Venus.");
       System.out.println("Type 3 to see your weight on Earth.");
       System.out.println("Type 4 to see your weight on Mars.");
       System.out.println("Type 5 to see your weight on Jupiter.");
       System.out.println("Type 6 to see your weight on Saturn.");
       System.out.println("Type 7 to see your weight on Uranus.");
       System.out.println("Type 8 to see your weight on Neptune.");
       System.out.println("Type 9 to see your weight on Pluto.");
        while (again.equals("Y") || again.equals("y"))
        {
            switch(planetNumber)
            {
                case 1:
                    newWeight = weight * 0.38;
                    planet = "Mercury";
                    break;
                case 2:
                    newWeight = weight * 0.78;
                    planet = "Venus";
                    break;
                case 3:
                    newWeight = weight;
                    planet = "Earth";
                    break;
                case 4:
                    newWeight = weight * 0.39;
                    planet = "Mars";
                    break;
                case 5:
                    newWeight = weight * 2.65;
                    planet = "Jupiter";
                    break;
                case 6:
                    newWeight = weight * 1.17;
                    planet = "Saturn";
                    break;
                case 7:
                    newWeight = weight * 1.05;
                    planet = "Uranus";
                    break;
                case 8:
                    newWeight = weight * 1.23;
                    planet = "Neptune";
                    break;
                case 9:
                    newWeight = weight * 0.05;
                    planet = "Pluto";
                    break;
                default:
                    System.out.println("Try again.");
                    correct = false;
                  
            }
            
            if (correct = true)
            {
                System.out.println("The planet you selected was " + planet + ".");
                System.out.println("Your weight on Earth was " + weight + " pounds.");
                System.out.println("Therefore, your weight on " + planet + " would be " + newWeight + " pounds.");
            }
            
                again = JOptionPane.showInputDialog("Type Y if you wish to try another planet.");
        }
    }
    
    public static void main(String[] args)
    {
        solar n = new solar();
        n.weight();
        
    }
}

