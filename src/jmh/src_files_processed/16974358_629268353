
/**
 * ##### # ########### ## ##### ### ####.
 * 
 * @###### (#### ##) 
 * @####### (#-##-##)
 */
public class Cup
{
    
    private Die die1;
    private Die die2;
    private Die die3;
    private Die die4;
    private Die die5;

    /**
     * Constructor for objects of class Cup
     */
    public Cup()
    {
        die1 = new Die();
        die2 = new Die();
        die3 = new Die();
        die4 = new Die();
        die5 = new Die();
    }
    public void shakeRattleAndRoll(){
        if(die1.getSetAside() == false){
           System.out.println("");
           System.out.println("Die 1: " + die1.roll());
        }else{
           System.out.println("");
           System.out.println("Die 1: " + die1.getNumber + "Set Aside")());
        }
        if(die2.getSetAside() == false){
           System.out.println("");
           System.out.println("Die 2: " + die2.roll());
        }else{
           System.out.println("");
           System.out.println("Die 2: " + die2.getNumber + "Set Aside"());
        }
         if(die3.getSetAside() == false){
           System.out.println("");
           System.out.println("Die 3: " + die3.roll());
        }else{
           System.out.println("");
           System.out.println("Die 3: " + die3.getNumber + "Set Aside"());
        }
         if(die4.getSetAside() == false){
           System.out.println("");
           System.out.println("Die 4: " + die4.roll());
        }else{
           System.out.println("");
           System.out.println("Die 4: " + die4.getNumber + "Set Aside"());
        }
         if(die5.getSetAside() == false){
           System.out.println("");
           System.out.println("Die 5: " + die5.roll());
        }else{
           System.out.println("");
           System.out.println("Die 5: " + die5.getNumber + "Set Aside"());
        }
    }
    public void setAside(int die){
        if(die > 5 || die < 1){
            System.out.println("");
            System.out.println("Invalid integer");
        }else if(die == 1){
               die1.makeTrue();
           
        }else if(die == 2){
               die2.makeTrue();
        
        }else if(die == 3){
               die3.makeTrue();
               
        }else if(die == 4){
               die4.makeTrue();
               
        }else if(die == 5){
               die5.makeTrue();
        }
    }
    public void putBack(int die){
        if(die > 5 || die < 1){
            System.out.println("");
            System.out.println("Invalid integer");
        }else if(die == 1){
            die1.makeFalse();
           
        }else if(die == 2){
            die2.makeFalse();
        
        }else if(die == 3){
            die3.makeFalse();
               
        }else if(die == 4){
            die4.makeFalse();
               
        }else if(die == 5){
            die5.makeFalse();
        }
    }
}