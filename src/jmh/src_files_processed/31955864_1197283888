public class Barrel
{
    private double content;
    private double capacity;

    public Barrel(double capacity, double content)
    {if(content<capacity)
        {
            this.content= content;
            this.capacity= capacity;
        }
        else
        { 
            this.content= capacity;
            this.capacity=capacity;
        }
    }
        public double getContent()
        {
            return content;
        }
        public double getCapacity()
        {
            return capacity;
        }
        
    public Barrel(double capacity)
    {
        this.capacity=capacity;
        this.content=0.0;
    }
    public void fill(double amount)
    { 
        if(amount>0 && amount+this.content< this.capacity)
        {
            this.content=this.content+amount;
        }
        if(amount<0 &&this.content-amount< this.capacity)
        {this.content=this.content-amount;
        }
        if(amount>0 && amount+this.content>this.capacity)
        {
        this.content= capacity;
    }
    if(amount<0 && this.content-amount>this.capacity)
    {
        this.content= capacity;
    }
}
public void showInfo()
{
    System.out.println("Capacity of the tank = "+this.capacity);
    System.out.println("Current content = "+this.content);
}
public double consume(double consume)
{
    if(content>consume)
    {content=content-consume;
    }
   return
}
}