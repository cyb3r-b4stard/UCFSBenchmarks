class SCHLAEGER 
extends RECHTECK {
    int deltaX;
    int deltaY;

    SCHLAEGER(){
        super(); 
        this.deltaX = 1;
        this.deltaY = 1;

    }

    SCHLAEGER(int hoehe, int breite){
        super(hoehe,breite);
        this.deltaX = 1;
        this.deltaY = 1;

    }

    SCHLAEGER(int x, int y, String farbe, int breite, int hoehe){
        super(hoehe,breite);
        super.setzeMittelpunkt(x,y);
        super.setzeFarbe(farbe);
        this.deltaX = 1;
        this.deltaY = 1;

    }

    int nenneDeltaX(){
        return this.deltaX
    }

    int nenneDeltaY(){
        return this.deltaY
    }
    
    void setzeDeltaX(deltaXneu){
        this.deltaX=deltaXneu;
    }
    void setzeDeltaY(deltaYneu){
        this.deltaY = deltaYneu;
    }
}