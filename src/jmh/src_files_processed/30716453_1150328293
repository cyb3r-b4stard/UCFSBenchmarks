import java.util.Scanner;

public class GuessingGame {    
    private Scanner sc;
    
    public GuessingGame() {
        sc = new Scanner(System.in);
    }
    
    public int readAnInt() {
        System.out.print("Enter a number: ");
        return sc.nextInt();
    }
    
    public void play() {
        int guessedNum;
        actualNum=java.utl.Random(101);
        system.out.println("Welcome to Guesstron 4000EX+!!!!!I'm thinking of a number between 1 and 100 (inclusive).Try to guess it, and I'll say higher or lower.");
        while(!guessedNum == actualNum){
            readAnInt();
            if(guessedNum < actualNum)
                System.out.println("Higher");
            else if(guessedNum < actualNum)
                System.out.println("Lower");
            else if(guessedNum == actualNum)
                System.out.println("You got it!");
        }
        System.out.println("It took you " + instances.readAnInt + "guesses.");
    
}