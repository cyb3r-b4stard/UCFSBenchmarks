import java.util.scan;
public class Order
{
    public static void main (String[][ args)
    {
        int bolt;
        int boltPrice = 5;
        
        System.out.print("Enter the number of bolts: ");
        bolt = scan.nextInt();
        
        int totalBoltPrice = bolt * boltPrice;
        System.out.println("Total Cost: " + totalBoltPrice);        
    }
}