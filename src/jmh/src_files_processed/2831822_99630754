import basis.*;
public class Paint
{
    private Fenster meinFenster;
    private Stift meinStift;
    private Maus meineMaus;
    private Knopf kEnde;
    private Knopf kRot;
    private Knopf kBlau;
    private Knopf kGruen;
    private Knopf kSchwarz;
    private Knopf kRadieren;
    private Knopf kStift;
    public Paint( )
    {
        meinFenster= new Fenster( 500,500 );
        meinStift = new Stift( );
        meineMaus = new Maus ( );
        kEnde = new Knopf ("Beenden",0,0,100,100);
        kRot = new Knopf ("",300,0,30,30);
        kBlau = new Knopf ("",330,0,30,30);
        kGruen = new Knopf ("",360,0,30,30);
        kSchwarz = new Knopf ("",390,0,30,30);
        kRadieren = new Knopf ("Radiergummi",200,0,100,100);
        kStift = new Knopf ("Stift",100,0,100,100);
        kRot.setzeHintergrundFarbe(Farbe.ROT);
        kBlau.setzeHintergrundFarbe(Farbe.BLAU);
        kGruen.setzeHintergrundFarbe(Farbe.GRUEN);
        kSchwarz.setzeHintergrundFarbe(Farbe.SCHWARZ);
    }

    public void fuehreAus()
    {
        
        while(!kEnde.wurdeGedrueckt()){
            meinStift.bewegeBis(meineMaus.hPosition(),meineMaus.vPosition());
            if(meineMaus.istGedrueckt()){
                meinStift.normal();
                meinStift.runter();
            }
            if(meineMaus.istGedrueckt()){
                meinStift.hoch();
            if(kRadieren.wurdeGedrueckt()){
                meinStift.runter();
                meinStift.radiere();
            }
            if(kRot.wurdeGedrueckt()){
                meinStift.setzeFarbe(Farbe.ROT);
            }
            if(kBlau.wurdeGedrueckt()){
                meinStift.setzeFarbe(Farbe.BLAU);
            }
            if(kGruen.wurdeGedrueckt()){
                meinStift.setzeFarbe(Farbe.GRUEN);
            }
            if(kSchwarz.wurdeGedrueckt()){
                meinStift.setzeFarbe(Farbe.SCHWARZ);
            }

        }
    }
}