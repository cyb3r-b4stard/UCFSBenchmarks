
/**
 * ##### ###### ###### ## ####### ## ##########(#####)#### ## ###### ########
 *
 * ######              : ###### ########
 * #### ## ########    : ##.##.####
 */
public class Personnage
{
    private String nom ; 
    private String race ; 
    private String sexe ; 
    private int age ; 
    private Arme mainDroite ;
    private Sac ceinture ;  
    public Personnage(){
        nom="tizzef";
        sexe = "masculin";
        race = "nain";
        age= 128;
        mainDroite= new Arme();
        ceinture = new Sac();
       
    
    }
    public Personnage(String nom, String race, String sexe, int age, String nomArme, String typeArme, int degatsArme, int coutArme){
        this.nom = nom;
        this.race = race;
        this.sexe = sexe;
        this.age = age;
        this.mainDroite = new Arme(nomArme, typeArme, degatsArme, coutArme);
        this.ceinture = new Sac();
    }
    public Personnage(String nom, String race, String sexe, int age, String matiere, int nbrPO, int nbrPA, int nbrPB){
        this.nom = nom;
        this.race = race;
        this.sexe = sexe;
        this.age = age;
        this.mainDroite = new Arme();
        this.ceinture = new Sac(matiere, nbrPO, nbrPA, nbrPB);
    }
    
    public Personnage(String nom, String race, String sexe, int age, String nomArme, String typeArme, int degatsArme, int coutArme, String matiere, int nbrPO, int nbrPA, int nbrPB){
        this.nom = nom;
        this.race = race;
        this.sexe = sexe;
        this.age = age;
        this.mainDroite = new Arme(nomArme, typeArme, degatsArme, coutArme);
        this.ceinture = new Sac(matiere, nbrPO, nbrPA, nbrPB);
    }
    
   public void setNom(String nom){
        this.nom=nom;
    }
   public void setRace(String race) {
        this.race=race;
    }
   public void setSexe(String sexe) {
        this.sexe=sexe;
    }
    public void setAge(int age) {
        this.age=age;
    }
    public void setMainDroite(Arme mainDroite) {
        this.mainDroite=mainDroite;
    }
    public void setCeinture(Sac ceinture) {
        this.ceinture=ceinture;
    }
    
   
    public String getNom(){
        return nom;
    }
    public String getRace(){
       
       return race;
    }
    public String getsexe(){
        return sexe;
    }
    public int getAge(){
        return age;
    }
    public Arme getMainDroite(){
       return mainDroite;
    }
    public Sac getCeinture(){
        return ceinture;
    
    }
    
    @Override
    public String toString (){
       String infos= "Nom:\t"+this.nom+"\n"
       +"Race \t:" + this.race+"\n"+
       "Sexe\t:" + this.sexe+"\n"+
       "Age \t:" + this.age+"\n" +
       "Arme--------------" + 
       mainDroite.toString();
       "Nom\t:" + this.nomArme+"\n"+
       "Type\t:" + this.typeArme+"\n"+
       "Degâts\t:" + this.degatsArme+"\n"+
       "Coût\t:" + this.coutArme+"\n"+
       "Sac---------------" + "\n"
      +ceinture.toString();
      
       
      return infos;
    }
}
