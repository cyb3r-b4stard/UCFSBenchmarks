 */
public class Kreis
{
    private Buntstift hatStift;
    private Rechner derRechner;
    private int zGroesse;
    private int zFarbe;
    private boolean zAktiv;

    public Kreis(int pH, int pV, int pGroesse, int pFarbe)
    {
        hatStift = new Buntstift();
        derRechner = new Rechner();
        zGroesse = pGroesse;
        zFarbe = pFarbe;
        zAktiv = false;
        hatStift.bewegeBis(pH, pV);
        hatStift.setzeFarbe(pFarbe);
        this.zeichne();
    }


    
    private void zeichne()
    {
        hatStift.zeichneKreis(zGroesse);
    }
    
    private void loesche()
    {
        hatStift.radiere();
        this.zeichne();
        hatStift.normal();
    }
    
    public void bewegeUm(int pH, int pV)
    {

        
        
        
        
    }
    
    public void aktiviere()
    {
     this.loesche();
     hatStift.setzeLinienbreite(3);
     this.zeichne();
     zAktiv = true;
    }
    public void deaktiviere()
    {
     this.loesche();
     hatStift.setzeLinienbreite(1);
     this.zeichne();
     zAktiv = false;
    }

    public boolean getroffen(int pH, int pV)
    {
        
        return (pH - hatStift.hPosition())
        *(pH - hatStift.hPosition())
        +(pV - hatStift.vPosition())
        *(pV - hatStift.vPosition()) <= zGroesse * zGroesse;
        
    }
    
    public void test()
    {
        if (this.getroffen)
        this.aktiviere
        else()
    }
}