public ComboB()
{
Container ca=getContentPane();
JPanel topPanel=new JPanel();
JPanel bottomPanel=new JPanel();
BorderLayout border=new BorderLayout(10,10);
GridLayout grid1=new GridLayout(3,1,2,2);
topPanel.setLayout(grid1);
ca.setLayout(border);

topPanel.add(philpesolabel);
topPanel.add(philpesotext);
topPanel.add(labelimaginary1);
itemCombobox.addItem(" American Dollar");
itemCombobox.addItem("Japanese Yen");
itemCombobox.addItem("British Pound Sterling");
itemCombobox.addItem("Chinese Yuan");
itemCombobox.addActionListener(this);
exitButton.addActionListener(this);
topPanel.add(itemCombobox);
topPanel.add(resultlabel);
topPanel.add(statusLabel);
bottomPanel.add(convertButton);
bottomPanel.add(exitButton);
ca.add(topPanel,BorderLayout.NORTH);
ca.add(bottomPanel);
setContentPane(ca);
setSize(500,500);
setLocation(0,0);
setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
setTitle("Create Frame");
setVisible(true);
}
