/**
 * #### # #### ####### ## # #### ######### ## ### ######### ######### ### # ####
 */
public class LoanApplicant
{
    private double annualSalary;
    private int yearsOnJob;

    /**
     * Constructor for class LoanApplicant
     * @param theAnnSalary is the annual salary
     * @param  is the number of years
     */
    public LoanApplicant(double theAnnSalary, int theYearsOnJob)
    {
        yearsOnJob = theYearsOnJob;
        annualSalary = theAnnSalary;
    }

    /**
     * Sets number of years on job
     * @param years number of years on job
     */
    public void setYearsOnJob(int years)
    {
        yearsOnJob = years;
    }

    /**
     * Returns number of years on job
     * @return wYears on job
     */
    public int getYearsOnJob()
    {
        return yearsOnJob;
    }

    /**
     * Sets new annual salary
     * @param salary which is the new salary
     */
    public void setAnnualSalary(double salary)
    {
        annualSalary = salary;
    }

    /**
     * Finds if applicant is qualified
     * return true if applicant qualifies otherwise false
     * @return qualifies
     */
    public boolean qualifies()
    {

        if (annualSalary>100000)
        {
            if (yearsOnJob>=0)
            {
                return true;
            }
        }

        else
        {
            if (annualSalary<=100000)
            {
                if (annualSalary>50000)
                {
                    if (yearsOnJob>=2)
                    {
                        return true;
                    }

                }
            }
            else if (annualSalary<=50000)
            {
                if(annualSalary>30000)
                {
                    if (yearsOnJob>=5)
                    {
                        return true;
                    }
                }
            }

        }
        else
        {
            return false;
        }
    }
}