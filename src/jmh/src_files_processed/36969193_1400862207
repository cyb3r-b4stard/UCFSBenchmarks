import java.util.*;
class program
{
    void main()
    {
        int y,z;
        int f=0;
        int ans;
        int rno;
        double ae,ab,ac,am,ap;
        double he,hb,hc,hm,hp;
        int se=0,sb=0,sc=0,sm=0,sp=0;
        double sum=0.0,cla;
        Scanner o=new Scanner(System.in);
        System.out.println("enter the no.of students");
        int n=o.nextInt(); 
        int rn[]=new int[n]; 
        String nm[]=new String[n];
        int eng[]=new int[n]; 
        int mat[]=new int[n]; 
        int phy[]=new int[n]; 
        int bio[]=new int[n];
        int chem[]=new int[n]; 
        int tot[]=new int[n]; 
        double avg[]=new double[n]; 
        for(int i=0;i<rn.length;i++)
        { 
        System.out.println("Enter the roll no of the student");
        rn[i]=o.nextInt(); 
        System.out.println("Enter the name of roll no : "+rn[i]);
        nm[i]=o.next();
        System.out.println("Enter the english mark of : "+nm[i]);
        eng[i]=o.nextInt();
        System.out.println("Enter the maths mark of : "+nm[i]);
        mat[i]=o.nextInt(); 
        System.out.println("Enter the physics mark of : "+nm[i]);
        phy[i]=o.nextInt(); 
        System.out.println("Enter the biology mark of : "+nm[i]);
        bio[i]=o.nextInt();
        System.out.println("Enter the chemistry mark of : "+nm[i]);
        chem[i]=o.nextInt();
        System.out.println();
        System.out.println();
        }
        for(int i=0;i<rn.length;i++)
        {
            tot[i]=eng[i]+mat[i]+phy[i]+bio[i]+chem[i]; 
            avg[i]=tot[i]/5.0; 
        }
        for(int i=0;i<rn.length;i++)
        {
          se=se+eng[i];
          sb=sb+bio[i];
          sc=sc+chem[i];
          sm=sm+mat[i];
          sp=sp+phy[i];
        }
         ae=se/n;
         ab=sb/n;
         ac=sc/n;
         am=sm/n;
         ap=sp/n; 
        he=eng[0];
        hb=bio[0];
        hc=chem[0];
        hm=mat[0];
        hp=phy[0];
        for(int i=0;i<rn.length;i++)
        {
          if(eng[i]>he)
          he=eng[i];
          if(bio[i]>hb)
          hb=bio[i];
          if(chem[i]>hc)
          hc=chem[i];
          if(mat[i]>hm)
          hm=mat[i];
          if(phy[i]>hp)
          hp=phy[i];
        }
        double h=avg[0]; 
        for(int i=0;i<rn.length;i++)
        {
            if(h<tot[i])
            {
                h=tot[i];
            }
        }
        for(int i=0;i<rn.length;i++)
        sum=sum+avg[i];
        cla=sum/rn.length;
        System.out.println("Enter your choice - 1 or 2");
        System.out.println("1-class");
        System.out.println("2-individual");
        int ch=o.nextInt();
        switch(ch)
        {
            case 1:
            System.out.println("                  Lakshmi school,Madurai");
            System.out.println("                       class '12'");
            System.out.println("                  Terminal-1 Examination");
            System.out.println("------------------------------------------------------------");
            System.out.println("Roll no   name      eng   phy   mat   chem   bio   tot   avg  ");
            for(int i=0;i<rn.length;i++)
            System.out.println(rn[i]+"        "+nm[i]+"   "+eng[i]+"    "+phy[i]+"    "+mat[i]+"    "+chem[i]+"     "+bio[i]+"    "+tot[i]+"   "+avg[i]);
            System.out.println("------------------------------------------------------------");
            System.out.println("Class average "+cla);
            System.out.println("Highest mark "+h);
            System.out.println("------------------------------------------------------------");
            System.out.println("If you want to see individual results");
            System.out.println("Enter 1");
            System.out.println("If not,Enter 2");
            y=o.nextInt();
            if(y==2)
            {
            System.out.println("Okay , thank you");
            break;
            }
            case 2:
            for(int i=0;i>-1;i++)
            {
              System.out.println("Enter the roll number");
              rno=o.nextInt();
              for(int j=0;j<rn.length;j++)
              {
              if(rno==rn[j])
              {
              f=1;  
              System.out.println("                      Lakshmi school,Madurai");
              System.out.println("                           Report card");
              System.out.println();
              System.out.println("Roll no: "+rn[j]+"       Class XII                      "+"Name: "+nm[j]); 
              System.out.println("              Marks obtained       class average          highest");
              System.out.println();
              System.out.println("English     :     "+eng[j]+"              "+ae+"                 "+he);  
              System.out.println();
              System.out.println("Physics     :     "+phy[j]+"              "+ap+"                 "+hp);
              System.out.println();
              System.out.println("Chemistry   :     "+chem[j]+"              "+ac+"                 "+hc); 
              System.out.println();
              System.out.println("Biology     :     "+bio[j]+"              "+ab+"                 "+hb); 
              System.out.println();
              System.out.println("Mathematics :     "+mat[j]+"              "+am+"                 "+hm);
              System.out.println();
              System.out.println("Total       : "+tot[j]);
              System.out.println("Average     : "+avg[j]);
              System.out.println();
              if(avg[j]>=21)
              System.out.println("                         Very good");
              if(avg[j]>=17&&avg[j]<21)
              System.out.println("                         Good");
              if(avg[j]>=13&&avg[j]<17)
              System.out.println("                         Not bad");
              if(avg[j]<=10)
              System.out.println("                         Better luck next time");
              System.out.println("-------------------------------------------------------------------");
              }
            }
              if(f==0)
              {
              System.out.println("Not found");
              f=0;
            } 
              System.out.println("Do you want to continue");
              System.out.println("Type 1 or 2");
              System.out.println("Enter 1 for yes");
              System.out.println("Enter 2 for no");
              ans=o.nextInt();
              if(ans==2)   
              break;
              }
             System.out.println("Thank you,all names needed are seen");
            }}             break;
             default:
             System.out.println("Invalid choice");
            }    
    }
}
