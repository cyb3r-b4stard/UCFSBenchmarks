
/**
 * #### #### ### ## - ################ #####
 * 
 * @###### (####### #########) 
 * @####### (####.##.##)
 */
public class CarpetCalculator
{
    private double pricePerSquareFoot;
    private Room room;
    
    /**
     * Default Constructor
     */
    public CarpetCalculator() {
        setPricePerSquareFoot(0.0);
        setRoom(new Room());
    }
    
    /**
     * Non-Default Constructor
     * @param setPricePerSquareFoot sets the price per square foot
     * @param setRoom sets the room object value
     */
    public CarpetCalculator(double setPricePerSquareFoot,Room setRoom) {
        setPricePerSquareFoot(setPricePerSquareFoot);
        setRoom(setRoom);
    }
    
    /**
     * Accessor Method for Price per square foot
     * @return the price per square foot
     */
    public double getPricePerSquareFoot() {
        return pricePerSquareFoot;
    }
    
    /**
     * Accesor Method for Room
     * @return returns the room object value
     */
    public Room getRoom() {
        return room;
    }
    
    /**
     * Set Method for Price per square foot
     * @param setPricePerSquareFoot sets the price per square foot
     */
    public void setPricePerSquareFoot(double setPricePerSquareFoot) {
        if (setPricePerSquareFoot >= 0.0) {
            pricePerSquareFoot = setPricePerSquareFoot;
        }
        else {
            pricePerSquareFoot = 0.0;
        }
    }
    
    /**
     * Set Method for Room
     * @param setroom sets the room object value
     */
    public void setRoom(Room setRoom) {
        if (setRoom != null) {
            room = setRoom;
        }
        else {
            room = new Room();
        }
    }
    
    /**
     * Calculate Method for calculating the total cost
     * @return calculates the total cost of carpet
     */
    public double calculateTotalCost() {
        double cost;
        cost = room.calculateArea() * getPricePerSquareFoot();
        return cost;
    }
    
    
    /**
     * Display Method for displaying the room dimensions and cost
     * @return returns the dimensions of the room, the price per square foot and the total cost
     */
    public void displayDetails() {
        System.out.println("Room Length: " + room.getLengthInFeet()) + "ft";
        System.out.println("Room Width: " + room.getWidthInFeet()+ "ft");
        System.out.println("Price Per Square Foot: $" + getPricePerSquareFoot);
        System.out.println("Total Cost to Carpet Room: $" + calculateTotalCost());
    }
    
}