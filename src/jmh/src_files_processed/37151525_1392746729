public class Lotto 
{
    private final int WIDTH = 600;
    private final int HEIGHT  = 400; 
    public Lotto (int anzahl){
        this.face();
        System.out.println("Viel Glück mit deinen neuen Lottozahlen wüncht dir Rico Pauli\n");
        int  b = anzahl;
        for (int a = 0; a < b ;a++) 
        {
            int c = a+1;
            System.out.print("Deine "+ c +" Zahlenfolge: ");
            for (int i = 1; i < 7; i++){
                System.out.print( 1 +  Math.round((Math.random()*49)+.5) +" ");
            }
            System.out.println("");
        }

    }

    public void face(){
        JFrame fenster = new JFrame("Lotto Number Selector");
        Container inhaltsfläche = fenster.getContentPane();

        inhaltsfläche.setLayout(new BorderLayout());
        JButton starter = new JButton("Push to start the new Selection");
        starter.setPreferredSize(new Dimension(100 ,60));
        JPanel centerpanel = new JPanel(new BorderLayout());
        inhaltsfläche.add(centerpanel, BorderLayout.CENTER);
        centerpanel.add(starter, BorderLayout.NORTH);

        
        fenster.setPreferredSize(new Dimension(500, 500));
        fenster.pack();
        fenster.setVisible(true);

    }
    
     send.addActionListener(new ActionListener(){
                public void actionPerformed(ActionEvent e)
                {
                    PostingMessage p = new PostingMessage(new User(textName.getText()), textMessage.getText());
                    comm.sendMessage(textServer.getText(), SERVERPORT, p);
                }
            } );
            
}
