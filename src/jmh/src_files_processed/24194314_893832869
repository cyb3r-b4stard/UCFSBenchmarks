class magi
{
    void main()
    {
        int i,j;
        for(i=1;i<=n;i++)
        {
            if(i%2==0)
            {
                for(j=1;j<=1;j++)
                {
                    System.out.print("+");
                }
            }
            else
            {
                for(j=1;j<=1;j++)
                {
                    System.out.print("*");
                }
                System.out.println();
            }
        }

                  
                    
