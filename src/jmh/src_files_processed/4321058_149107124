public class seconde {
int nbSecondesDonne; 
int nbSecondesRestantes;
int nbSecondes; 
int nbMinutes;
int nbHeures;
int nbJours; 
System.out.print( "Veuillez entrer un nombre de secondes : " );
nbSecondesDonne = Clavier.lireInt();
while ( nbSecondesDonne != 0 ) {
if ( nbSecondesDonne < 0 ) {
System.out.println("Le nombre de secondes doit etre positif.");
} else {
nbJours = nbSecondesDonne / (24 * 60 * 60);
nbSecondesRestantes = nbSecondesDonne % (24 * 60 * 60);
nbHeures = nbSecondesRestantes / 3600;
nbSecondesRestantes = nbSecondesRestantes % 3600;
nbMinutes = nbSecondesRestantes / 60
nbSecondes = nbSecondesRestantes % 60;
System.out.println( nbSecondesDonne + " secondes = "
+ nbJours + " jour(s) + "
+ nbHeures + " heure(s) + "
+ nbMinutes + " minute(s) + "
+ nbSecondes + " seconde(s)." );
} 
