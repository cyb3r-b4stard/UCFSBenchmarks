import javax.swing.JOptionPane;
import java.util.Random;


public class Game

{
    public static void main (String[] args)
    {
        String name1, name2, input;
        
        name1 = JOptionPane.showInputDialog("Player 1, please, write your name.");
        name2 = JOptionPane.showInputDialog("Player 2, please, write your name.");
       
        
        int currentMoney=500;
        int boardSpot = 0;
      
        System.out.print("Player One Name: " + name1);
        System.out.print("Spot on board: " + boardSpot);
        System.out.println("Current Money: " + currentMoney);
        
        System.out.print("Player Two Name: " + name2);
        System.out.print("Current Money: " + currentMoney);
        System.out.println("Spot on board: " + boardSpot);
        System.out.println;
        
        
        Random randNum1 = new Random();
        int dice1 = randNum1.nextInt(5) + 1;
        Random randNum2 = new Random();
        int dice2 = randNum2.nextInt(5) + 1;
        
        System.out.println(name1 + " Rolls! " );
        System.out.println("Dice One: " + dice1);
        System.out.println("Dice Two: " + dice2);
        
        Random randNum3 = new Random();
        int dice3 = randNum3.nextInt(5) + 1;
        Random randNum4 = new Random();
        int dice4 = randNum4.nextInt(5) + 1;
        
        System.out.println(name2 + " Rolls! " );
        System.out.println("Dice One: " + dice3);
        System.out.println("Dice Two: " + dice4);
        
        String loop;
        loop = JOptionPane.showInputDialog("Do you want to continue playing? Enter yes or no.");
    
    
        
        
       
    }
}
        
      

    
    