import java.util.*;
/**
 * ######## # #### ##### #### ######### ### ### ############ #######
 * 
 * @###### ####### ##### 
 * @####### ##/##/####
 */
public class BorrowerTUI
{
    private BorrowerList borrowerList;
    private Scanner myScanner;
    /**
     * Constructor for objects of class BorrowerTUI
     */
    public BorrowerTUI()
    {
        borrowerList = new BorrowerList();
        myScanner = new Scanner(System.in);
    }

    /**
     * provides the main user interface with the program
     */
    public void menu()
    {
        int command = -1;
        while (command != 0)
        {   
            displayMenu();
            command = getCommand();
            execute( command );
        }
    }

    /**
     * displays the menu string on the terminal display
     */
    private void displayMenu()
    {
        String menuString = "Please select option:\n";
        menuString += "Add Borrower                     1\n";
        menuString += "Get Number of Borrowers          2\n";
        menuString += "Remove a borrower                3\n";
        menuString += "Show all borrowers               4\n";
        menuString += "Show borrower                    5\n";
        menuString += "Quit                             0\n";
        System.out.print(menuString);

    }

    /**
     *  obtains the user's command
     *  one command per line
     *  @return the user command
     */
    private int getCommand()
    {
        System.out.print ("Enter command: ");
        return myScanner.nextInt();
    }

    /**
     * processes the legal commands
     * @param command the command entered by the user
     */
    private void execute( int command)
    {
        if ( command == 1)
            addBorrower();
        else
        if ( command == 2)
            getNumberOfBorrowers();
        else
        if ( command == 3)
            removeBorrower();
        else
        if ( command == 4)
            showAllBorrowers();
        else
        if ( command == 5)
            showBorrower();
        else
        if ( command == 0)
            quitCommand();
        else
            unknownCommand(command);
    }


    private void addBorrower()
    {
        Borrower.public Borrower(String fName, String lName, String lNumber, 
                    String street, String town, String postcode;
    }

    private void getNumberOfBorrowers()
    {
        System.out.println("****************");
        System.out.println("Number of borrowers: " + borrowerList.getNumberOfBorrowers());
        System.out.println("****************");
    }

    private void quitCommand()
    {
        System.out.println("****************");
        System.out.println("System Closing");
        System.out.println("****************");
        System.exit(0);
    }

    private void removeBorrower()
    {
        System.out.print("Enter borrower's library number : ");
        String libraryNumber = myScanner.nextLine();
        if (borrowerList.removeBorrower(libraryNumber))
            System.out.println("Borrower with library number: " + libraryNumber + " removed");
        else
            System.out.println("Borrower with library number: " + libraryNumber + " not  found");
    }

    private void showAllBorrowers()
    {
        System.out.println("****************");
        borrowerList.getAllBorrowers();
        System.out.println("****************");
    }

    private void showBorrower()
    {
        System.out.print("Enter borrower's library number : ");
        String libraryNumber = myScanner.nextLine();
        if (borrowerList.getBorrower(libraryNumber))
            System.out.println("Borrower with library number: " + libraryNumber + " removed");
        else
            System.out.println("Borrower with library number: " + libraryNumber + " not  found");

    }

    private void unknownCommand(int command)
    {
        System.out.println("****************");
        System.out.println("Unknown Command");
        System.out.println("****************");
    }

}