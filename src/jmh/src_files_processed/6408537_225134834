import java.util.Scanner;
import java.io.File;
import java.io.IOException;

/**
 *  ###### ########.
 * 
 * @###### ### ########
 * @####### ## #
 */
public class SummerOlympics1
{
    public static void main(String[] args) throws IOException
    {
        Scanner input= new Scanner(System.in);
        System.out.print("Please Enter Part of your Countrie's Name: ");
        String olympicsInput= input.nextLine();
        
    
        File myFile = new File("SummerOlympics.csv");
        Scanner OFile = new Scanner(myFile);
       
        OFile.useDelimiter("[\\n,]");

        boolean found = false;
        int olympiad = 1;
     
        while(OFile.hasNext())
        {
            int year= OFile.nextInt ();
            String city= OFile.next();
            String country= OFile.next();

            if(!country.equals("cancelled") &&
                country.toLowerCase().contains(olympicsInput))
            {
               String result= (city+", "+country+", in "+year);
               System.out.println("Olympiad "+olympiad+" was held in "+ result);
                found = true;
            
            
              
            } else System.out.println("Error Search Found 0 Results"); 
              found= false
               olympiad++;         
             }        
       
       input.close ();
    }

}
