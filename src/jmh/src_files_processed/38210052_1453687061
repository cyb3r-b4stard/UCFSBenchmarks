
import java.util.*;
import java.io.*;
public class Assignment2 
{
 
    public static void main (String [] args) throws IOException
    {
        Scanner in = new Scanner (System.in);
        Calendar now = Calendar.getInstance();
        Calendar paidTill; 
        String selection;
        int min;
        double total;
        double customerTotal;
        double minutesPaid;
        double charge;
        long cardNumber;
        double digit;
        
        total= 0;
        customerTotal= 0;
        minutesPaid = 0;
        
        System.out.println ("Welcome to Pay and Go parking");
        System.out.println ("+ to add 30 mins");
        System.out.println ("p to print the ticket");
        System.out.println ("r to restart");
        System.out.println ("x to exit the program");
        System.out.print ("Please choose your selection: ");
        selection = in.next();
        System.out.println ("====================================");
        
        while (selection != "x")
        {
            switch (selection)
            {
                case "+":
                minutesPaid += 30;
                customerTotal += 1;
                System.out.println ("Current Time:  " + now.get(Calendar.HOUR_OF_DAY) + ":" + now.get(Calendar.MINUTE));
                paidTill = (Calendar)now.clone();
                min = in.nextInt();
                paidTill.add(Calendar.MINUTE, min);
                System.out.println ("Paid Till" + paidTill.get(Calendar.HOUR_OF_DAY) + ":" + paidTill.get(Calendar.MINUTE));
                System.out.println ("Current Charge $" + customerTotal);
                System.out.println ("====================================")
                break;
                
                case "p":
                System.out.println ("Enter credit card number: ");
                cardNumber = in.nextLong();
                System.out.println ("Enter 3 digit security code from back of Credit Card: ");
                digit = in.nextDouble();
                System.out.println ("\f");
                System.out.println ("Welcome to Pay and Go parking");
                System.out.println ("+ to add 30 mins");
                System.out.println ("p to print the ticket");
                System.out.println ("r to restart");
                System.out.println ("x to exit the program");
                System.out.print ("Please choose your selection: ");
                selection = in.next();
                System.out.println ("====================================");
                System.out.println ("Current Time:  " + now.get(Calendar.HOUR_OF_DAY) + ":" + now.get(Calendar.MINUTE));
                paidTill = (Calendar)now.clone();
                System.out.print ("How many minutes do you want to add to the current time?");
                min = in.nextInt();
                paidTill.add(Calendar.MINUTE, min);
                System.out.println ("Paid Till" + paidTill.get(Calendar.HOUR_OF_DAY) + ":" + paidTill.get(Calendar.MINUTE));
                customerTotal = 0;
                minutesPaid = 0;
                System.out.print ("Press any key to continue...");
                System.in.read();
                break;
                
                case "r":
                customerTotal = 0;
                minutesPaid = 0;
                break;
            }
        }
    }
}
