class Name
{
    private static final int MINIMUM_NAME_LENGTH = 1;
    private static final int MAXIMUM_NAME_LENGTH = 40;
    private String first;
    private String last;
    private String middle;
    
    /**
     * Default constructor.
     */
    public Name ()
    {
        first  = "A.Non Ymous";
        middle = "A.Non Ymous";
        last   = "A.Non Ymous";
    }
    
    /**
     * This constructor 
     * @param theFirst
     * @param theMiddle
     * @param theLast
     */
    public Name (String theFirst, String theMiddle, String theLast)
    {
        if(theFirst == null)
        {
            theFirst = "A.Non Ymous";
        } else if((theFirst.length() < MINIMUM_NAME_LENGTH) || (theFirst.length() > MAXIMUM_NAME_LENGTH))
        {
            theFirst = "A.Non Ymous";
        } else
        {
            first = theFirst;
        }
        if((theMiddle.length() < MINIMUM_NAME_LENGTH) || (theMiddle.length() > MAXIMUM_NAME_LENGTH))
        {
            theMiddle = "A.Non Ymous";
        } else 
        {
            middle = theMiddle;
        }
        if(theLast == null)
        {
            theLast = "A.Non Ymous";
        } else if((theLast.length() < MINIMUM_NAME_LENGTH) || (theLast.length() > MAXIMUM_NAME_LENGTH))
        {
            theLast = "A.Non Ymous";
        } else
        {
            last = theLast;
        }
    }
    
    
    private String makePrettyName ()
    {   
      if (middle == null)
      {
          return ("");
      } else
      { 
          return (;
      }
    }
    
    private String makePrettyString (String uglyString)
    {
       if ((uglyString.equals("") || (uglyString == null)))
      {
         return uglyString;
      } else
      {
          String prettyString = (Character.toUpperCase(uglyString.charAt(0)) + uglyString.substring(1).toLowerCase());
          return prettyString; 
      }
    }
     
    
    public String getInitials ()
    {
        if((first == null) || (last == null)) 
        {
            return "Not all names have been entered";
        }
        String initials = first.substring(0, 1) + "." + last.substring(0, 1);
        {
            return initials.toUpperCase();
        }
    }
    
    
    public String getFullName ()
    { 
        return makePrettyName();
    }
}
        
    