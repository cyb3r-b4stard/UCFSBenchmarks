import java.util.*;
import java.io.*;
public class RPS
{
    public static void main(String[]args) throws IOException
    {
        Scanner keyboard=new Scanner(System.in);
        String name;
        
        
        Random gen=new Random();
        
        System.out.println("\nWhat's your name?");
        String user=keyboard.nextLine();
        
        System.out.println("Okay "+user+" we are going to play Rock Paper Scissors.");
 
        int draw=0;
        int win=0;
        int loss=0;
        String computer1=" ";
        String user1;
        String user2;
        do
        {   
            System.out.println(user+"'s turn:");
            System.out.println("Please choose your weapon. (R / P / S)");
            String move=keyboard.nextLine();
            
            int comp=gen.nextInt(2);
            
            switch(comp)
            {
                case 0:
                computer1="rock";
                break;
                case 1:
                computer1="paper";
                break;
                case 2:
                computer1="scissors";
                break;
            }
            System.out.println("The Computer has chosen "+computer1);
            if(move.equals(computer1))
            {
                System.out.println("It is a tie");
                draw++;
            }
            if(move.equals("rock")&&computer1.equals("scissors")||move.equals("scissors")&&computer1.equals("paper")||move.equals("paper")&&computer1.equals("rock"))
            {
                System.out.println("You won! Nice!!!");
                win++;
            }
            if(computer1.equals("rock")&&move.equals("scissors")||computer1.equals("scissors")&&move.equals("paper")||computer1.equals("paper")&&move.equals("rock"))
            {
                System.out.println("You lost! Better luck next game!!!");
                loss++;
            }
           
            System.out.println("Do you want to play again? (yes/no) ");
            user1=keyboard.nextLine();
        }while(user1.equalsIgnoreCase("Yes"));
        System.out.println("Ties: "+draw+" Wins: "+win+" Losses: "+loss);
        
        
        
        do
        {
            System.out.println("Do you want to save this? (yes/no) ");
            user2=keyboard.nextLine();
            
            System.out.println("What do you want you're file to be named?");
            String fileName=keyboard.nextLine();
            PrintWriter outputFile=new PrintWriter(fileName);
            
            outputFile.println("Name: "+user);
            outputFile.println("Ties: "+draw);
            outputFile.println("Wins: "+win);
            outputFile.println("Lost: "+loss);
            user2.equalsIgnoreCase("Yes"));
        }
    
    } 
}                