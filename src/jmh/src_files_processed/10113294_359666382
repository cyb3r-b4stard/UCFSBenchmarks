
import java.io.*;
import java.util.*;
public class Automobile 
{
    double tripCost = 100/24;
    double tank;
    double fuel_left;
    public double fillUp()
    {
        tank=tank+20;
        return tank;
    }
    public double takeTrip()

    {
        tank=tank-tripCost;
        return tank;
    }
    public double reportFuel()
    {
        fuel_left=tank;
        return fuel_left;
    }
    public double fuel_left()
    {
        System.out.println(fuel_left);
        return fuel_left;
    }
    public double main(String args[]) 
    {  
        Automobile myBMW = new Automobile();
        System.out.println("You buy a new car! What will you do with it next?");
        System.out.println(" ");
        System.out.println("A. Fill up your tank."); 
        System.out.println("B. Take a trip!");
        System.out.println("C. Check your fuel.");
        System.out.println(" ");
        System.out.println("Your choice? _ ");
        
        Scanner keyboard = new Scanner(System.in);
        String myChoice = keyboard.nextLine();
        char choice = myChoice.charAt(0);
        {
            switch(choice)
        {
            case 'a':
            case 'A':
            myBMW.fillUp();
            System.out.println("20 Gallons of gas have been added to your tank!");
            case 'b':
            case 'B':
            myBMW.takeTrip();
            System.out.println("You take a 100 mile trip. You use " + tripCost + "gallons of gas.");
            case 'c':
            case 'C':
            myBMW.reportFuel();
            myBMW.fuel_left();
            default:
            System.out.println("Please choose either A, B, or C.");
        }
    }
}