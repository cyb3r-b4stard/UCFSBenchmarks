public class HighSchoolClass
{
    private Student[] students;
    students[0] = 3.0;
    private static final double NUMSTUDENTS = 6;
    private double[] grades = {3.0, 4.3, 4.0, 3.7, 4.2, 3.8};
    double gradeptavg = 0;
    double honors;
    double honorsperc = 0;
    double valedictorian;

    public Student getValedictorian()
    {
        for (double i : grades)
        {
            if (gradeptavg < i)
            {
                gradeptavg = i;
                valedictorian = gradeptavg;
                System.out.println ("The valedictorian is " + valedictorian + ".");
            }
        }
    }

    public double getHonorsPercent()
    {
        for (double i : grades)
        {
            if (gradeptavg >= 4.0)
            {
                gradeptavg = honors;
                honorsperc = honors/NUMSTUDENTS;
                System.out.println ("The percentage of students in honors is " + honorsperc + "%");
            }
        }
    }
}
