import java.util.Scanner;
public class Temperature implements CalcTempInterface
{
    private char unit;
    private double temperature;
    
    public Temperature( )
    {
        unit = '?';
        temperature  = 0.00;
    }
    
    public Temperature (char theUnit, double theTemperature)
    {
        unit = theUnit;
        temperature = theTemperature;
    }
    
    public void setTemp (char newUnit, double newTemperature)
    {
        unit = newUnit;
        temperature = newTemperature;
    }
    
    public void giveResult( )
    {
        convertTemp( );
    }
    
    private void convertTemp( )
    {
        Scanner keyboard = new Scanner(System.in);
        
        boolean inputValid = true;
        boolean good = false;
        boolean valid2 = false;
        String answer;
        double newF;
        double newC;
        char type;
        int tester = 1;
        int secondTester = 1;
        
        System.out.println("Conversion Method Initiated!");
        
       
        do{     
           
        System.out.println("Enter the temperature (example: 98.35 F).");
        
        
        temperature = keyboard.nextDouble();
        unit = (keyboard.next().charAt(0));
        char upperCaseUnit = Character.toUpperCase(unit);
        
        keyboard.nextLine();
        
          
              try{
              if (upperCaseUnit == 'C')
                {
                    type = 'C';
                    good = true;
                    newF = (temperature * 9/8 + 32);
                    System.out.println(newF + " F");
                }
              else if (upperCaseUnit == 'F')
                {
                    type = 'F';
                    good = true;
                    newC = ((temperature - 32) * 5/9);
                    System.out.println(newC + " C");
                }
            }
            catch(Exception e){
                System.out.println("You suck, user. Try again.");
                tester=3;
            }
        
            try
            {
            
            do(
                
            System.out.println("Do you want to convert another one?");
          
            System.out.println("Yes or No?");
            answer = keyboard.next();
            
            
          
              if (answer.equalsIgnoreCase("No"))
              {
                  good = true;
                  secondTester = 2;
              }
              else if (answer.equalsIgnoreCase("Yes"))
              {
                  good = false;
                  secondTester = 3;
              }
                  
            }
             catch(Exception ja){
                System.out.println("Can't let you do that, idiot user.");
            }
            
        
    
        }while (secondTester==1); 
    
    }
}
    