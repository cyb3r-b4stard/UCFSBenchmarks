public class Player
{
    private String name;
    private Store store;
    private double money;
    
    public Player(String name)
    {
        this.name = name;
        this.store = null;
        this.money = 20000.00;
    }
    
    public Player(String name, Store store, int money)
    {
        this.name = name;
        this.store = store;
        this.money = money;
    }
    
    public String getName()
    {
        return name;
    }
    
    public Store getStore()
    {
        return store;
    }
    
    public void setStore(Store store)
    {
        this.store = store;
    }
    
    public double getMoney()
    {
        return money;
    }
    
    public void setMoney(double money)
    {
        this.money = money;
    }
    
    public String toString()
    {
        return "Name: " + name "\nGeld: " + money
    }
}