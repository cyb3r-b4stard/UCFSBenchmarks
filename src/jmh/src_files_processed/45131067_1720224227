public class Sternchen
{

    public void zeichneRechteckVoll(int hoehe,int breite)
    {
        int s;
        int z;

        z = 0;
        while (z < hoehe)
        {
            s = 0;
            while (s < breite)
            {
                System.out.print("*");
                s++;
            }
            System.out.println();
            z++;
        }
    }

    public void zeichneRecheckLeer(int hoehe,int breite,int abstand)
    {
        /** DAS MIT ABSTAND IST MIR UNKLAR*/
        int s;
        int z;

        z = 0;
        while (z < hoehe)
        {
            for(int x=1;x<=abstand;x++)
            {
                System.out.print("");
            }
            s = 0;
            while (s < breite)
            {
                if ((z == 0) || (s == 0) || (s == breite-1) || (z == hoehe-1))
                {
                    System.out.print("*");
                }
                else
                {
                    System.out.print(" ");
                }                
                s++;
            }
            System.out.println();
            z++;
        }
    }

    public void zeichneDreieck(int hoehe ,boolean leer)
    {
        int s;
        int z;

        z = 0;

        if(leer==false)
        { 
            while(hoehe>0)
            {
                z=hoehe;
                while(z>0)
                {
                    System.out.print("*");
                    z--;
                } 
                System.out.println("");
                hoehe--;

            }
        }
        else
        {
            while (z < hoehe)
            {
                s = 0;
                while (s < hoehe)
                {
                    if ((z == 0) || (s == 0) || (z+s == hoehe-1))
                    {
                        System.out.print("*");
                    }
                    else
                    {
                        System.out.print(" ");
                    }                
                    s++;
                }
                System.out.println();
                z++;
            }
        }

    }
    
