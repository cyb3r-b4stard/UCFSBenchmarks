
import java.util.Scanner;
public class RepetiçãoAninhada
{
    public static void main (String args[])
    {
    
    Scanner in = new Scanner(System.in);
    
    int linha = 1;
    int max;
    
    System.out.println("Digite o seu número inteiro");
    max=in.nextInt();
    
    
    while (linha <= max)
    {
        
        int esp = 1;
        
        while (esp < max)
        {
            System.out.print(" ");
            esp++;             
        }       
        
        ast = max - 1;
        
        while (ast < max)
        { 
            System.out.print("*");
            ast++;
        }
        
        max = max - 1
               
        System.out.println(); 
        
        linha++;
    }
        
    }

}