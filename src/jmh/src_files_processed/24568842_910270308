import java.util.ArrayList;
/**
 * ##### ########### ##### ### #############
 * 
 * @###### #### ######
 * @####### ####.##.##
 */
public class Monitoring
{
    private ArrayList<Observatory> observatories;

    /**
     * Creates an ojbect of the monitoring class
     */
    public Monitoring()
    {
        observatories = new ArrayList<Observatory>();
    }
    /**
     * Adds an existing observatory to the list
     */
    public void store(Observatory newObservatory)
    {
        observatories.add(newObservatory);
    }

    /**
     * Finds the total number of observatories covered by this monitoring object
     */
    public int getCount()
    {
        return observatories.size();
    }
    /**
     * Finds the observatory with the largest average earthquake magnitude
     */
    public double getMaxAv()
    {
        double biggestAv;
        if(getCount() > 0) 
        {
            biggestAv = observatories.get(0).getAverage();
            for(Observatory myObservatory : observatories) {
                if(myObservatory.getAverage() > biggestAv) {
                    biggestAv = myObservatory.getAverage();
                }
            }
        }
        else
        {
            biggestAv = -1;
        }
        
    }
    /**
     * Finds the maximum magnitude earthquake recorded at this observatory
     *
    public double getMax()
    {
        double biggest;
        if(getCount() > 0) 
        {
            biggest = earthquakes.get(0).getMag();
            for(Earthquake myEarthquake : earthquakes) {
                if(myEarthquake.getMag() > biggest) {
                    biggest = myEarthquake.getMag();
                }
            }
        }
        else
        {
            biggest = -1;
        }
        
        return biggest;
    }/*
}