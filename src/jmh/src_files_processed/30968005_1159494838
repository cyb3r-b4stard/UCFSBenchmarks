public class Prime
{
   public static void main(String[] args)
   {
       System.out.println(isPrime(7));
       System.out.println(nextPrime(24);
    }
   
    public static boolean isPrime(int num)
    {
        int sqrt = (int) Math.sqrt(num);
        int ctr = 2;
        while(ctr<sqrt)
        {
            if(num%ctr==0)
                return false;
        }
        return true;
    }
    
    public static int nextPrime(int num)
    {
        int ctr = num + 1;
        while(!isPrime(ctr)
        {
            ctr++;
        }
        return ctr;    
    }