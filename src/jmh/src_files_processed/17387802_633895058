
public class Televisor
{
    private int canal;
    private boolean apagado;
    private int volumen;
    private int auxv;
    private int autoApagado;
  

    public Televisor()
    {
    this.apagado=true;
}
 public Televisor(int canal, boolean apagado, int volumen, int autoApagado)
 {
   this.canal=canal;
   this.apagado=apagado;
   this.volumen=volumen;
   this.auxV=0;
   this.autoApagado=autoApagado;
   
}

public int getcanal(){
    return this.canala;
}
public void setCanal(int canal){
    this.canal=canal;
}
public boolean getApagado(){
    return this.apagado;
}
public void setApagado(boolean apagado){
    this.apagado=apagado;
}
public int getVolumen(){
    return this.volumen;
}
public void setVolumen(int volumen){
    this.volumen=volumen;
}
public int getAuxV(){
    return this.auxV;
}
public void setAuxv(int auxV){
    this.auxV=auxV;
}
public int getAutoApagado(){
    return this.autoApagado;
}
public void setAutoApagado(int autoApagado){
    this.autoApagado=autoApagado;
}

public void apagar(){
    this.apagado=true;
}
public void encender(){
    this.apagado=false;
}

public void subirVolumen(){
    this.volumen=this.volumen+1;
    this.auxV=this.volumen;
}
public void bajarVolumen(){
    this.volumen=this.volumen-1;
    this.auxV=this.volumen;
}

public void mute(){
    this.auxV=this.volumen();
    this.volumen=0;
}
public void unMute(){
    this.volumen=this.auxV;
}

public void aumentarCanal(){
     this.canal=this.canal+1;
}
public void disminuirCanal(){
    this.canal=this.canal-1;
}

public void horaApagar() {
    this.autoApagado=hora;
}

