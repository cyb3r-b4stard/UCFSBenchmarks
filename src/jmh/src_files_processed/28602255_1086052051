import java.util.Scanner;
public class FibonacciNumbers
{
    public static int fibonacciNum(int num)
    {
        if(num <= 0)
        {
            return num;
        }
        else if(num == 1)
        {
            return 0;
        }
        else
        {
            if(num == 2)
            {
                return 1;
            }
            else
            {
                return fibonacciNum(num-1) + fibonacciNum(num-2) ;
            }
        }
    }
    public static void main(String[] args)
    {
        int fibNum;
        boolean done = false;
        String inFibNum;
        
        Scanner in = new Scanner(System.in);
        do{
            System.out.println();
            System.out.print("************Fibonacci Number************");
            System.out.println();
            System.out.print("Type the fibonacci number you need (type a letter to quit): ");
            inFibNum = in.next();
            if(in.next() == Integer.parseInt(in.next()))
            {
                done = true;
            }
            inFibNum = Integer.parseInt(inFibNum);
            if(fibonacciNum(fibNum) < 0)
            {
                System.out.println("Not a correct number!!");
            }
            else
            {
                System.out.println("The fibonacci number you picked is: " + fibonacciNum(fibNum));
            }
        }while(!done)
    }
}