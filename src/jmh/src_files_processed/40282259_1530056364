 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class APLine2
{
private int a;
private int b;
private int c;

public APLine2(int a, int b, int c) {
    this.a = a;
    this.b = b;
    this.c = c;
}
public double getSlope() {
    return -(a/(double) b);
}
public boolean isOnLine(int x, int y) {
if (x*a + b*y + c==0)
    return true; 
{
else
{
    return false; 
}
}
}
    