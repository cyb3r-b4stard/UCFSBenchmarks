   }
   
   public int averageRainfall ()
   {
       int sum=0;
       for (int x=0; x < NUMDAYS; x++)
       {
           for (int y=0; y < NUMWEEKS; y++)
           sum+= rainData [x][y];
       }
       double average= (double) sum/(NUMDAYS);
   }
    
   public int washoutWeekends ()
   {
       go through each week 
       sat & sun > 0
       total rainfall is > 0
   }
    
