public class Baum{
int a;
int b;
int Differenz;
public Baum(){}
public Baum(int A,int B){a=A;b=B;}
public void Subtrahieren(){Differenz=a-b;}
public void Entscheidung(){
if(Differenz<0)
{System.out.println("Die Differenz der beiden Zahlen"+a+"und"+b+"beträgt"+Differenz+"und ist negativ");}
else{System.out.println("Die Differenz der beiden Zahlen"+a+"und"+b+"beträgt"+Differenz+"und ist positiv");}
public void RichtigSchreiben(String d){
    if (d=="Markus"){System.out.println("Du Hast"+ d +"richtig geschrieben");}
else{System.out.println("Du hast "+d+"richtig geschrieben");}}
}






}
