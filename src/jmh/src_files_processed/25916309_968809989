 public abstract class Shape {
   abstract void draw();

      Shape (Point  p){
       position = p;
    }
}

 abstract class Round extends Shape{
            final double pi=3.14159265;
            abstract void draw();
            abstract double area();
            abstract void drawCircle();
}

class Circle extends Round{
     int radius;
    
     void draw(){
        drawCircle(Point); 
    }
        double area(){
           return pi*radius*radius;
        }

  Circle  (Point p, int radius){
     super(p);
     this.radius = radius;
}
class Pont{
    int x,y;
   void   Point(int x1,int y1){
      x=x1;
      y=y1;
    }
   void  Point(){
        this (0,0);
    }
    void moveTo(int x1,int y1){
      x=x1;
      y=y1;
    }
}
}