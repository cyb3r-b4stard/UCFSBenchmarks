public class Alumno
{
    public String rut;
    public String nombre;
    public int edad;
    public char sexo;  
    public double promedio;
    public boolean vigente;

    public Alumno(){
        rut = "";
        nombre = "";
        edad = 0;
        sexo = 'F';
        promedio = 0; 
        vigente = false;
    }    

    public Alumno(String rut, String nombre, int edad, char sexo, double promedio, boolean vigente){
        this.rut = rut;
        this.nombre = nombre;
        this.edad = edad;
        this.sexo = sexo;
        this.promedio = promedio;
        this.vigente = vigente;
    } 

    public String getRut(){
        return rut;
    }

    public String gatnombre(){
        return nombre;
    }

    public int getEdad(){
        return edad;
    }

    public char getSexo(){
        return sexo;
    }

    public boolean getVigente(){
        return vigente;
    }

    public double getpromedio(){
        return promedio;
    }
    
    public void setRut(String rut){
        this.rut = rut;
    }
    public void setNombre (String nombre){
        this.nombre = nombre;
    }
    public void setEdad(int edad){
        this.edad = edad;
    }
    public void setSexo(char sexo){
        this.sexo = sexo;
    }
    public void setVigente(boolean vigente){
        this.vigente = vigente;
    }
    public void setPromedio(double promedio){
        this.promedio = promedio;
    }
    
    public void printAlumno(){
        System.out.println("El rut es: " + rut);
        System.out.println("El nombre es: " + nombre);
        System.out.println("La edad es: " + edad);
        System.out.println("El promedio es: " + promedio);
        System.out.println("El sexo es: " + sexo);
        System.out.println("Â¿vigente? " + vigente);
        System.out.printIn("--------------------------");
        
    }
    public void auementarPromedio (double incremento){
        promedio = promedio + incremento;
    }
    
    public void disminiurPromedio (double decremento){
        promedio = promnedio - decremento;
    }
    
        
    }
       
    
    
    
    
    
       




} 
