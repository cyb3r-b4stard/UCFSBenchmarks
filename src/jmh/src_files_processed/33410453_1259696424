/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Borrower
{
    private String name;
    private int id;
    private int age;
    private String book1;
    private String book2;
    private int numberOfBook;
    
    /**
     * Constructor for objects of class Borrower
     */
    public Borrower()
    {
        name = "";
        id = -1;
        age = -1;
        book1 = "";
        book2= "";
    }
    
    /**
     * Constructor for objects of class Borrower
     */
    public Borrower(String newName,int newId,int newAge,String newBook,String newBook1,String newBook2)
    {
        age = newAge;
        id = newId;
        name = newName;
        book1 = newBook1;
        book2 = newBook2;
    }
    
    /**
     * The method is for get name of the Borrower. 
     */
    public String getName()
    {
        return name;
    } 
    
    /**
     * The method is for get ID of the Borrower. 
     */
    public int getId()
    {
        return id;
    } 
    
    /**
     * The method is for get age of the Borrower. 
     */
    public int getAge()
    {
        return age;
    } 
    
    /**
     * The method is for set borrower's name, which cannot be blank. 
     */
    public void setName(String newName)
    {
        if (newName.trim().length() != 0)
         name = newName;
         
    }
    
    /**
     * The method is for set Id of the borrower, which must between 1 and 100 (inclusive). 
     */
    public void setId(int newId)
    {
        if(newId >= 1 && newId <= 100)
         id = newId;
    }
    
    /**
     * The method is for set Id of the borrower, which must greater than 5 and less than 110. 
     */
    public void setAge(int newAge)
    {
        if(newAge > 5 && newAge < 110)
         age = newAge;
    }
    
      /**
     * The method is for get all information of the item as a line, each information is spilted with a ","
     */
    public String getDetails()
    {
        return name + ","+ id + "," + age +","+ book1 + ","+ book2
    }
    
    public void setBook1(String newBook1)
    {
        book1 = newBook1;
    }
    
    public void setBook2(String newBook2)
    {
        book2 = newBook2;
    }
    
    public String getBook1()
    {
        return book1;
    }
    
    public String getBook2()
    {
        return book2;
    }
    
    public int getNumberOfBook()
    {
        return numberOfBook;
    }
    
    
  
}