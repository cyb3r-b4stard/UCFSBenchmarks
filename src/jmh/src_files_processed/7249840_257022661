
/**
 * ########## ### ####
 * 
 * ########## #######, #########
 * ### ### ####
 */
public class Property
{
    private int id;
    private String address;
    private double price;

    /**
     * Constructor for objects of class Property
     */
    public Property(int inId, String inAddress, double inPrice) 
    {
       id = inId;
       address = inAddress;
       price = inPrice; 
    }

    /**
     * Return the id of the property
     */
    public int getId()
    {
        return id;
    }
    /**
     * Return the address of the property.
     */
    public String getAddress()
    {
        return address;  
    }
    /**
     * Return the price of the property.
     */
    public double getPrice()
    {
        return price;   
    }
    /**
     * Print the details of the property, specifically the id, address and price.
     */
    public void printDetails()
    {
        System.out.println("The property details are:")
        System.out.println("Property id is " + id)
        System.out.println("Property is situated at " + address)
        System.out.println("The price of the property is $" + price + ".");
    }
    /**
     * Set the price of the property to a new value to be input by the user.
     */
    public void setPrice(double inPrice)
    {
        price = inPrice;
    }
}