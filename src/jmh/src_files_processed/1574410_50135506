import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class KmToMeter extends JFrame implements ActionListener
{
    private JFrame frame1 = new JFrame();
    private JLabel jiKilometer = new JLabel("Kilometer");
    private JLabel jiMeter = new JLabel("Meter");
    private JButton jbtnCalculate = new JButton("Convert");
    private JLabel jlResult = new JLabel("Result");
    
    private JTextField jtfKilometer = new JTextField(5);
    private JTextField jtfMeter     = new JTextField(5):
    Private JTextField jtfResult    = new JTextField(5):
    
    
    
    
    
    public KmToMeter()
    {
       frame1.setLayout(new GridLayout(4,2)):
      
       frame1.add(jlKilometer);
       frame1.add(jtfKilometer);
       frame1.add(jlConvert);
       frame1.add(jlMeter);
       frame1.add(jtfMeter);
       frame1.add(jbtnCalculate);
       frame1.add(jlCalculate);
       frame1.add(jlResult);
       frame1.add(jtfResult);
       jbtnCalculate.addActionListener(this);
      
      frame1.setTitle("Converter");
      frame1.setSize(200,250);
      frame1.setLocationRelativeTo(null);
      frame1.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
      frame1.setVisible(true);
       
       
    }

 public void actionPerformed(ActionEvent e)
    {
        double KiloMeter = Double.parseDouble(jtfKilometer.getText());
        double Meter = Double.parseDouble(jtfMeter.getText());
         
        double Result = KIloMeter*1000
         
        String convertResult = Double.toString(Result);
        jtfResult.setText(convertResult);
    }
       
    public static void main (String []largs)
    {
      new KmToMeter()
    
    }
}