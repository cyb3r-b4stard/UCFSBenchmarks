USE DOUBLE IF THERE IS A DECIMALS PLACE
import java.util.Scanner;
/**
 * @author Shelden Ma
 * @version 1/29/14
 */
public class PercentFat
{
public static void main (String[] args)
{
 Scanner keyboard = new Scanner(System.in);
 System.out.println("What is your body weight?");
 int userBodyWeight = keyboard.nextDouble();
 System.out.println("What is your waist circumference? (taken at the belly button)")
 double WaistSize = keyboard.nextDouble();
 double newBodyWeight = userBodyWeight * 1.082 + 94.42;
 double newWaistSize = WaistSize * 4.15;
 double LeanWeight = newBodyWeight - newWaistSize;
 double BodyFat = userBodyWeight - LeanWeight;
 double PercentFat = BodyFat / userBodyWeight * 100;
 System.out.println (" Your body fat percentage is " + PerentFat + ".");
}
}
 