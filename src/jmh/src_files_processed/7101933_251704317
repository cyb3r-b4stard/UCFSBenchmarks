import java.util.*;

class Lab8 {
    public static void stringEquality() {
        Scanner keyboard = new Scanner(System.in);
        System.out.print("Enter the first string: ");
        String first = keyboard.nextLine();
        System.out.print("Enter the second string: ");
        String second = keyboard.nextLine();
        if(first.equals(second)) {
            System.out.println("The two strings are the same.");
        } else {
            System.out.println("The two strings are different.");
        }
    }

    public static void info() {
        Scanner keyboard = new Scanner(System.in);
        System.out.print("Enter a string: ");
        String first = keyboard.nextLine();
        System.out.println("The string has " + first.length() + " characters.");
        System.out.println("The first character is '" +  (first.charAt(0)) + "'.");
        System.out.println("The last character is '" + first.charAt(first.length() - 1)+ "'.");
        System.out.println("The middle part is '" +(first.substring(1, first.length() - 1)) + "'.");
    }

    public static void question() {
        Scanner keyboard = new Scanner(System.in);
        System.out.print("Did you pass the driving test? ");
        String first = keyboard.nextLine();
        if(first.equals("yes")) {
            System.out.println("Well done!");
        } else {
            System.out.println("Sorry, better luck next time.");
        }
    }

    public static int eCount(String string) {
        int counter = 0;
        for(int i = 0; i < string.length(); i++) {
            if(string.charAt(i) == 'e' || string.charAt(i) == 'E'){
                counter++;
            }
        }
        return counter;
    }

    public static int wordCount(String string) {
        int counter = 0;
        if(string.length() > 0) {
            counter++;
        }
        for(int i = 0; i < string.length(); i++) {
            if(string.charAt(i) == ' ') {
                counter++;
            }
        }
        return counter;
    }
    
    public static String upper(String string) {
        StringBuilder name = new StringBuilder(string);
        for(int i = 1; i < name.length(); i++) {
            if(name.charAt(i) >= 'a' && name.charAt(i) <= 'z'){
                name.setCharAt(i, (char)(name.charAt(i) -32));
            }
        }
        return name.toString(); 
    }
    
    public static boolean isPalindrome(String string){
        return string.equals(new StringBuilder(string).reverse().toString());
    }
    
    public static void averageLength() {
        Scanner keyboard = new Scanner(System.in);
        String string;
        double counter = 0;
        int total;
        do {
        System.out.print("Enter a word (or type "end" to finish): ");
        string = keyboard.nextLine();
        total = string.length();
        counter++;
    }while(string != end);
    System.out.println("The average word length is " + counter/total);
}