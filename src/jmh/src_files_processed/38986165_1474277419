public class Discount
{
	
	public static double getDiscountedBill(double bill)
	{if (bill>2000)
	    { return bill*.85;
	       }
	       if (bill<= 2000)
	       {return bill;
	       }
	    return 0;
	       }
	   
	  
	  
	   
	 
	   
	    
	   }
		    
	}
