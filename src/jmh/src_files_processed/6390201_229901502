    public static void testeGeld(){
        if (anzGeld >= 100) {
            jbKaufenGeschmacksverstaerker.setBackground(Color.GREEN);
            jbKaufenGeschmacksverstaerker.setCursor(new Cursor(Cursor.HAND_CURSOR));
            jbKaufenGeschmacksverstaerker.setBorderPainted(true);
        } else{
            jbKaufenGeschmacksverstaerker.setBackground(Color.LIGHT_GRAY);
            jbKaufenGeschmacksverstaerker.setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
            jbKaufenGeschmacksverstaerker.setBorderPainted(false);
        }

        if (anzGeld >= 150) {
            jbKaufen5Formen.setBackground(Color.GREEN);
            jbKaufen5Formen.setCursor(new Cursor(Cursor.HAND_CURSOR));
            jbKaufen5Formen.setBorderPainted(true);
        } else {
            jbKaufen5Formen.setBackground(Color.LIGHT_GRAY);
            jbKaufen5Formen.setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
            jbKaufen5Formen.setBorderPainted(false);
        }

        if (anzGeld >= 300) {
            jbKaufen15Formen.setBackground(Color.GREEN);
            jbKaufen15Formen.setCursor(new Cursor(Cursor.HAND_CURSOR));
            jbKaufen15Formen.setBorderPainted(true);
        } else {
            jbKaufen15Formen.setBackground(Color.LIGHT_GRAY);
            jbKaufen15Formen.setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
            jbKaufen15Formen.setBorderPainted(false);
        }

        if (anzGeld >= 1500) {
            jbKaufenMaschine1.setBackground(Color.GREEN);
            jbKaufenMaschine1.setCursor(new Cursor(Cursor.HAND_CURSOR));
            jbKaufenMaschine1.setBorderPainted(true);
        } else {
            jbKaufenMaschine1.setBackground(Color.LIGHT_GRAY);
            jbKaufenMaschine1.setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
            jbKaufenMaschine1.setBorderPainted(false);
        }

        if (anzGeld >= 5000) {
            jbKaufenLaden.setBackground(Color.GREEN);
            jbKaufenLaden.setCursor(new Cursor(Cursor.HAND_CURSOR));
            jbKaufenLaden.setBorderPainted(true);
        } else {
            jbKaufenLaden.setBackground(Color.LIGHT_GRAY);
            jbKaufenLaden.setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
            jbKaufenLaden.setBorderPainted(false);
        }

        if (anz_laden > anz_zaehler) {
            jbKaufenLaden.setBackground(Color.ORANGE);
            jbKaufenLaden.setCursor(new Cursor(Cursor.HAND_CURSOR));
            jbKaufenLaden.setBorderPainted(true);
        }
    }

    public void jbBonbon_ActionPerformed(ActionEvent evt) {
        anzBonbon = anzBonbon + grSummandBonbon;
        if (anzFormen >=1) {
            anzBonbon = anzBonbon + (grSummandBonbon * grSummandBonbonMitForm - grSummandBonbon);
            anzFormen = anzFormen - 1;
            jlAnzFormen.setText(String.valueOf(anzFormen));
        }

        if (anzFormen == 0) {
            grSummandBonbon = 1;
            jlAnzFormen.setText("");
        } 

        jlAnzBonbon.setText(String.valueOf(anzBonbon));
    } 

    public void jbVerkaufen_ActionPerformed(ActionEvent evt) {
        if (anzBonbon > 0) {
            anzBonbon = anzBonbon - 1;
            anzGeld = anzGeld + grSummandGeld;

            jlAnzBonbon.setText(String.valueOf(anzBonbon));
            jlAnzGeld.setText(String.valueOf(anzGeld));
            testeGeld();
            if (anzGeschmacksverstaerker > 0) {
                anzGeschmacksverstaerker = anzGeschmacksverstaerker - grSummandBonbon; 
                jlAnzGeschmacksverstaerker.setText(String.valueOf(anzGeschmacksverstaerker));       
            }
            if (anzGeschmacksverstaerker == 0) {
                grSummandGeld = 1;
                jlAnzGeschmacksverstaerker.setText("");
            }
        }
    }

    public void jbKaufenGeschmacksverstaerker_ActionPerformed(ActionEvent evt) {
        if (anzGeld >= 100) {
            anzGeld = anzGeld - 100;
            grSummandGeld = 2;
            anzGeschmacksverstaerker = anzGeschmacksverstaerker + 250;
            jlAnzGeld.setText(String.valueOf(anzGeld));
            jlAnzGeschmacksverstaerker.setText(String.valueOf(anzGeschmacksverstaerker));
            testeGeld();
        }
    }

    public void jbKaufen5Formen_ActionPerformed(ActionEvent evt) {
        if (anzGeld >= 150) {
            anzGeld = anzGeld - 150;
            anzFormen = anzFormen + 5;
            jlAnzGeld.setText(String.valueOf(anzGeld));
            jlAnzFormen.setText(String.valueOf(anzFormen));
            grSummandBonbonMitForm = 25;
            testeGeld();
        }
    }

    public void jbKaufen15Formen_ActionPerformed(ActionEvent evt) {
        if (anzGeld >= 300) {
            anzGeld = anzGeld - 300;
            anzFormen = anzFormen + 15;
            jlAnzGeld.setText(String.valueOf(anzGeld));
            jlAnzFormen.setText(String.valueOf(anzFormen));
            grSummandBonbonMitForm = 25;
            testeGeld();
        }
    } 

    public void jbKaufenMaschine1_ActionPerformed(ActionEvent evt) {
        if (anzGeld >= 1500) {
            anzGeld = anzGeld - 1500;
            jlAnzGeld.setText(String.valueOf(anzGeld));
            anz_zaehler = anz_zaehler+1;   
            System.out.println("Es wird sekündlich um  > " + MrBon.anz_zaehler + " <  erhöht.");
        } 
    }

    public void jbKaufenLaden_ActionPerformed(ActionEvent evt) {
        if (anzGeld >= 5000) {
            anzGeld = anzGeld - 5000;
            jlAnzGeld.setText(String.valueOf(anzGeld));
            anz_laden = anz_laden + 1;   
            System.out.println("Es wird sekündlich um  > " + MrBon.anz_zaehler + " <  erhöht.");
        } 
    } 

    public void setzeLabel(String t) {
        jlAnzBonbon.setText(String.valueOf(t));
    }
    
    public void jMenuItemBeenden_ActionPerformed(ActionListener l) {
        System.out.println("Test");
    }
    
