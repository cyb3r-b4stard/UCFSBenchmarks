import java.util.Scaner;
public class Jugador
{
    String Rut;
    String Nombre;
    int Edad;
    String Equipo;
    boolean Estado = true;
    
    public void setRut (String variable){
        Rut=variable;
    }   
    public String getRut(){
        return Rut;
    }
    public void setNombre(String variable){
        Nombre=variable;
    }
    public String getNombre(){
        return Nombre;
    }
    public void setEquipo(String variable){
        Equipo=variable;
    }
    public String getEquipo(){
        return Equipo;
    }
    public void setEdad (int variable){
        Edad=variable;
    }
    public int getEdad (){
        return Edad;
    }
    public void Disponible(){
        Estado = true;
    }
    public void NoDisponible(){
        Estado = false;
    }
    public boolean Estado(){
       return Estado;
    }
       if (Estado == false)
       {
           Scanner leer= new Scanner(System.in);
           int op=0;
       
           while(op!=3)
           {
               System.out.println("ingrese 1 si tiene Tarjeta Roja");    
               System.out.println("ingrese 2 si esta lesionado"); 
               op= leer.nextInt();
       
               switch (op){
                   case 1: System.out.println("Tarjeta Roja");    
                   case 2: System.out.println("lesionado"); 
                   break;
                }
            }
        }
    }
    
        
}