import java.awt.*;
import java.util.*;
import java.io.*;
import javax.swing.*;
import java.awt.event.*;

public class QueryView
{
    public static JFrame inputFrame = new JFrame("Find Contact");
    public static JTextField inputTextBox = new JTextField("", 20);
    
    /**
     * Prompts the user with a GUI input
     * Constructs and displays a prompt JFrame
     * The frame requests the for a last name to query for, then calls parseInput()
     */
    public static void createSearchFrame()
    {   
        ListView.displayFrame.setVisible(false);
        
        inputFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
       
        JLabel promptUser = new JLabel("Please enter a last name to search for.");
        inputTextBox.setText("");
        JButton escape = new JButton("Enter");
        
        promptUser.setPreferredSize(new Dimension(250, 25));
        inputTextBox.setPreferredSize(new Dimension(50, 10));
        
        escape.addActionListener(e -> ContactList.findContact(inputTextBox.getText()));
        
        inputFrame.getContentPane().add(promptUser, BorderLayout.CENTER);
        inputFrame.getContentPane().add(inputTextBox, BorderLayout.EAST);
        inputFrame.getContentPane().add(escape, BorderLayout.SOUTH);
        
        inputFrame.pack();
        inputFrame.setVisible(true);
    }
}