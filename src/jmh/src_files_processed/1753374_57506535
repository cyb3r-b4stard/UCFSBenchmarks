import javax.swing.JOptionPane;
public class Planetweight
{
    public static void main()
    {
        String input = JOptionPane.showInputDialog("What is your weight on earth?");
        String planet = JOptionPane.showInputDialog("Which planet?");
        int x = Integer.parseInt(input);
        double weight = ""
        if(planet.equalsIgnorecase(mercury))
        {
            weight = x*0.38
        }
        if(planet.equalsIgnoreCase(venus))
        {
            weight = x*0.78
        }
        if(planet.equalsIgnorecase(mars))
        {
            weight = x*0.39
        }
        if(planet.equalsIgnoreCase(jupiter))
        {
            weight = x*2.65
        }
        if(planet.equalsIgnoreCase(saturn))
        {
            weight = x*1.17
        }
        if(planet.equalsIgnoreCase(uranus)
        {
            weight = x*1.05
        }
        if(planet.equalsIgnoreCase(neptune))
        {
            weight = x*1.23
        }
        if(planet.equalsIgnoreCase(pluto))
        {
            weight = x*0.05
        }
        JOptionPane.showMessageDialog(null,"You weigh "+weight+" on "+planet);
    }
}
