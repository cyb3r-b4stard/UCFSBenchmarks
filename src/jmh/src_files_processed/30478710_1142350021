import.util.scan
public class Point_simple
{
    private double x;
    private double y;

    /**
     * Creates a new Point instance with the specified x and y coordinates.
     */
    public Point_simple(double x, double y)
    {
        this.x = x;
        this.y = y;
    }
    public Point_simple()
    {
        try{
            Scanner keyboard=new Scanner(System.in);
            System.out.println("Please enter coordinates.");
            x=keyboard.nextDouble();
            y=keyboard.nextDouble();
            
        }

        catch (Exeption e) 
        {
            return false;
        }
    }

    /**
     * Sets a new x-coordinate for this point.
     * 
     * @param x the new x-coordinate
     */
    public void setX(double x)
    {
        this.x = x;
    }

    /**
     * Sets a new y-coordinate for this point.
     * 
     * @param y the new y-coordinate
     */
    public void setY(double y)
    {
        this.y = y;
    }

    /**
     * Returns the current x-coordinate of this point.
     * 
     * @return the x-coordinate
     */
    public double getX()
    {
        return this.x;
    }

    /**
     * Returns the current y-coordinate of this point.
     * 
     * @return the y-coordinate
     */
    public double getY()
    {
        return this.y;
    }
}
