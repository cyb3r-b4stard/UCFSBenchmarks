public class Gestisci
{
    private String numFattura;
    private String data;
    private double importo;
    private String nome;
    int[] cliente=new int[3]; 
    BufferedReader input= new BufferedReader(new InputStreamReader(System.in));
    
    public void setGestisci() throws Exception
    {
        int i;
        for (i=0;i<3;i++)
        {
           System.out.println("Inserisci numero di fattura: ");
            numFattura = input.readLine();
            System.out.println("Inserisci la data: ");
            data = input.readLine();
            System.out.println("Inserisci l'importo");
            importo=Double.parseDouble(input.readLine());
            System.out.println("Inserisci il nome dell'intestatario: ");
            nome = input.readLine(); 
        }
    }
    public void getGestisci()
    {
        for (int i=0;i<[3];i++)
        {
             System.out.println("Numero di fattura: "+numFattura+ "in data"+data+ "di "+nome+ "con importo pari a :"+importo);
        }
    }
    
}
        
  
            
        
        
