import java.util.Scanner;
public class IfsPrograms2
{
    public static void TargetAudience ()
    {
        Scanner scan = new Scanner (System.in);
        System.out.println ("Please enter your age:");
        String input = scan.nextLine ();
        int a = Integer.parseInt (input);
        if (a >=18 && a <=39)
        {
            System.out.println ("Your important");
        }
        else
        {System.out.println ("Nobody cares about you!");
        }
    }
    
    public static void LuckyNumber ()
    {
        Scanner scan = new Scanner (System.in);
        System.out.println ("Please enter a number");
        String input = scan.nextLine ();
        int a = Integer.parseInt (input);
        if (a > 100 || a%5 == 0 )
        {
            System.out.println (""+a+" is a lucky number");
        }
        else 
        {System.out.println (""+a+" is an unlucky number");
        }
    }
    
    public static void BiggestNumber ()
    {
        Scanner scan = new Scanner (System.in);
        System.out.println ("Please enter a number");
        String input = scan.nextLine ();
        int a = Integer.parseInt (input);
        System.out.println ("Please enter another number");
        String input2 = scan.nextLine ();
        int b = Integer.parseInt (input2);
        System.out.println ("Please enter a third number");
        String input3 = scan.nextLine ();
        int c = Integer.parseInt (input3);
        if (a>b && a>c)
        {
            System.out.println (""+a+" is the largest number");
        }
        if (b>a && b>c)
        {
            System.out.println (""+b+" is the largest number");
        }
        if (c>a && c>b)
        {
            System.out.println (""+c+" is the largest number");
        }
    }
    
    public static void BiggestNum ()
    {
        Scanner scan = new Scanner (System.in);
        System.out.println ("Please enter a number");
        String input = scan.nextLine (input);
        int a = Integer.parseInt (input);
        if (a==1 || a==3 || a==5 ||a==7 || a==8 || a==10 || a==12 
        {   
            System.out.println ("There are 31 days in month number "+a+"");
        }
        if (a==2)
        {
            System.out.println ("There are 28 days in monnth number "+a+"");
        }
        if (a==4 || a==6 || a == 9 || a==11 
        {
            System.out.println ("There are 30 days in month number "+a+"");
        }
    }       
                
        
}
            