import java.awt.Graphics;
import java.awt.Color;
import java.awt.Rectangle;

public class RangeInfantry extends Units 
{

    final private boolean infantryUnit = true;
    final private boolean armourVehicle= false;
    final private boolean artillery = false;

    public RangeInfantry(Handler handler,float x ,float y)
    {   
        super(handler,x,y,1,100,10,0,1);
        bounds.x = 22;
        bounds.y = 48;
        bounds.width = 19;
        bounds.height = 15;
    }

    public boolean getInfantreyUnit()
    {
        return infantryUnit;
    }

    public boolean getArmourVehicle()
    {
        return armourVehicle;
    }

    public boolean getArtillery()
    {
        return artillery;
    }

    public void tick()
    {
      System.out.println("tick")
        move();
    }

    public void render(Graphics g)
    {        
        g.drawImage(Assets.rangeInfantry[0],(int)(x + handler.getGameCamera().getXOffset()),(int)(y + handler.getGameCamera().getYOffset()),
        width,height,null);
        g.setColor(Color.RED);
        g.fillRect((int)(x + bounds.x + handler.getGameCamera().getXOffset()),
        (int)(y + bounds.y + handler.getGameCamera().getYOffset()),
        bounds.width, bounds.height);
    }
}