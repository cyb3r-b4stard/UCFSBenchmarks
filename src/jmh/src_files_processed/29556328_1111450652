   public void displayWelcome(){
       System.out.println("Welcome to The Lemond Stand!");
    }
   
   public boolean getYesOrNoAnswer(String yesNoprompt){
     System.out.println(yesNoprompt);
     
     Scanner YoN = new Scanner (System.in);
     String yesNopromptstring = YoN.next();
     char yesOrNo = yesNopromptstring.charAt(0);

 
     if (yesOrNo == 'Y' || yesOrNo == 'y'){
         return true;
        }
        else {
            return false;
        }


    }
   
   public void findOutIfNewCustomer(){
      
      boolean isFirstTime = getYesOrNoAnswer("Is this the first time you are here?");
      if(isFirstTime == true && haveRegisteredCustomer == false){
         System.out.println("You are actually our first customer");
         getNewCustomerInformation();
        }
        else if (isFirstTime == true && haveRegisteredCustomer==true){
            System.out.println("Sorry. Right now, our system can only keep track of one customer. \n So Connie will be receiving points for you.");
            
            getNewCustomerInformation();
        }
        else if (isFirstTime == false && haveRegisteredCustomer==true){
            System.out.print("Welcome back" + sampleCustomer.getName());
        }
        else{
            System.out.println("You must be a new customer.");
            
        }
        
      
    }
   
   private void getNewCustomerInformation(){
      boolean pointSystem = getYesOrNoAnswer("Would you like to sign up for our point system? (y/n)"); 
      
      if (pointSystem == true){
        System.out.println("Thank you! We are going to start you with 10 points now.");
        System.out.println("What's your name?");
        
        Scanner sc = new Scanner(System.in);
        String customerName = sc.nextLine();
        sampleCustomer = new Customer(customerName, 10);
        }
        else{
            System.out.println("Please. Otherwise, the system wouldn't work.");
            System.out.println("Just do it for now. We will give you 20 points.");
             
            Scanner sc = new Scanner(System.in);
            String customerName = sc.nextLine();
            sampleCustomer = new Customer(customerName, 20);
        }
        haveRegisteredCustomer = true;
    }
   
   public void takeCustomerOrder(){
       menu.getUserChoice();
    } 
   
   private int getPointValueForFoodItem(int menu_choice) {
       int pointAdd;
       switch(menu_choice){
           case 1:
                pointAdd = 2;
                break;
           case 2:
                pointAdd = 3;
                break;
           case 3: 
                pointAdd = 3;
                break;
           case 4:
                pointAdd = 4;
                break;
           case 5:
                pointAdd = 5;
                break;
           default:
                pointAdd = 0;
                break;
        }
        return pointAdd;
    } 
    
