public class Book {
    
    private String title;
    private String author;
    private int numberOfPages;
    private String signature;
    private int counter;
    private boolean borrowed;
    

    public Book(String title, String author, int numberOfPages) {
        this.title = title;
        this.author = author;
        this.numberOfPages = numberOfPages;
        this.signature = "";
        this.counter = 0;
        this.borrowed = false;
    }

    public String getTitle() {
        return title;
    }

    public String getAuthor() {
        return author;
    }

    public int getNumberOfPages() {
        return numberOfPages;
    }

    public String getSignature() {
        return signature;
    }

    public void setSignature(String signature) {
        if ((signature.length() < 5)) {
            System.out.println("Die Signatur muss mindestens 5 Zeichen lang sein.");
        }
        else {
            this.signature = signature;
        }
        }
    
    public int getNumberOfBorrows() {
        return counter;
    }

    public void printDetails() {
        if ((signature.length() == 0)) {
        System.out.println("Titel: " + title);
        System.out.println("Autor: " + author);
        System.out.println("Seitenanzahl: " + numberOfPages);
        System.out.println("Titel: " + title);
    }
    else {
        System.out.println("Titel: " + title);
        System.out.println("Autor: " + author);
        System.out.println("Seitenanzahl: " + numberOfPages);
        System.out.println("Buchsignatur: " + signature);
        System.out.println("Titel: " + title);
    }
    }

    public boolean borrow() {
        if (this.borrowed == false) {
            this.borrowed = true;
            counter++;
            System.out.println("Sie haben das Buch erfolgreich ausgeliehen");
        } else
        {
            System.out.println("Das Buch ist bereits ausgeliehen.");
            this. borrowed = false:
        }
        return borrowed;
    }

    public boolean giveBack() {
        if (this.borrowed == true) {
            this.borrowed = false;
            System.out.println("Sie haben das Buch erfolgreich zurÃ¼ckgegeben.");
        } else {
            this.borrowed = true;
        }
        return borrowed;
    }

}