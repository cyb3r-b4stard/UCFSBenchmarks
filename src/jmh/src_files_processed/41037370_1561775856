import java.util.*;
import javax.swing.*;
public class catalogo
{
    int vehiculo,utotal;
    public void iniciar()
    {
        String[] options = {"Carro", "Suv (4X4)", "Camioneta", "volver a patalla principal"};
        int seleccion = JOptionPane.showOptionDialog(null, "Es necesario que seleccione una opcion", "Titulo", JOptionPane.DEFAULT_OPTION, JOptionPane.QUESTION_MESSAGE, null, options, options[0]); 

        if (seleccion == 0){
            JOptionPane.showMessageDialog(null,"has seleccionado carro");
            carro();
        }else if (seleccion == 1){
            JOptionPane.showMessageDialog(null,"has seleccionado SUV (4X4)");
            SUV();
        }else if (seleccion == 2){
            JOptionPane.showMessageDialog(null,"has seleccionado camioneta");
            camioneta();
        }else if(seleccion == 3){
            int resp = JOptionPane.showConfirmDialog(null, "多Esta seguro?", "Alerta!", JOptionPane.YES_NO_OPTION);
        }
    }



    public void carro ()
    {
        String[] options= { "Chevrolet Impala","Cadillac ATS", "Audi A6", "Honda Accord","Hyundai Elantra","Ford Fiesta","volver al menu anterior" };
        String seleccion = (String) JOptionPane.showInputDialog(null,"Seleccione el modelo","modelos", JOptionPane.QUESTION_MESSAGE, null,options,options[0]);

        if (seleccion == "Chevrolet Impala"){
            JOptionPane.showMessageDialog(null,"a")
            
        }else if (seleccion == "Cadillac ATS"){
            JOptionPane.showMessageDialog(null,"")
        }else if (seleccion == "Audi A6"){
            JOptionPane.showMessageDialog(null,"")
        }else if(seleccion == "Honda Accord"){
            JOptionPane.showMessageDialog(null,"")
            
        }else if(seleccion == "Hyundai Elantra"){
            JOptionPane.showMessageDialog(null,"")
        }else if(seleccion == "Ford Fiesta"){
            JOptionPane.showMessageDialog(null,"")
        }else if (seleccion == "volver al menu anterior"){
            int resp = JOptionPane.showConfirmDialog(null, "多Esta seguro?", "Alerta!", JOptionPane.YES_NO_OPTION);
        }
    }

