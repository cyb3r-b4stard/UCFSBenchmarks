import java.util.*;
class Employee
{
    String name,address;
    long phone;
    double salary,IncomeTax;
    void accept(String args[])
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter Employee's name,address,phone number and monthly salary");
        name=sc.next();
        address=sc.next();
        phone=sc.nextLong();
        salary=sc.nextDouble();
    }
    void display()
    {
        System.out.println("Name:"+name);
        System.out.println("Address:"+address);
        System.out.println("Phone No. :"+phone);
        System.out.println("Salary:"+salary);
    }
    void computeTax()
    {
        double ann_sal=salary*12;
        if(ann_sal>150000)
        {
            IncomeTax=0.5*(ann_sal-150000);
        }
        else
        {
            System.out.println("Not liable to pay tax");
        }
    }
    void main(String args)
    {
        Employee obj=new Employee();
        obj.accept;
        obj.display;
        obj.computeTax;
    }
}