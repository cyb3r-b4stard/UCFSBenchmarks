package day07.practices;

import java.util.Scanner;

public class Practice04
{
    static Scanner scan = new Scanner(System.in);

    static void q07() {
        System.out.print("세로의 크기를 입력하세요 : ");
        int x= scan.nextInt();
        System.out.print("가로의 크기를 입력하세요 : ");
        int y= scan.nextInt();
        int count = 1;
        for(int col = 1; col<=x; col++){
            for(int row = 1; row<=y; row++){
                System.out.format("%4d", count);
                count++;
            }
            System.out.println();
        }
    }

    static void q07_1() {
        System.out.print("세로의 크기를 입력하세요 : ");
        int x= scan.nextInt();
        System.out.print("가로의 크기를 입력하세요 : ");
        int y= scan.nextInt();
        for(int col = 1; col <= x; col++){
            for(int row = 1; row <= y; row++){
            }
            System.out.println();
        }
    }

    static void q08() {
        System.out.print("수를 입력하세요 : ");
        int x= scan.nextInt();
        int val=tri(x); 

        for(int r = 0; r < x; r++){
            for(int c =0; c<=r; c++){  
                System.out.format("%4d",val-- );

            }
            System.out.println();
        }
    }  

    static int tri(int x){
        return (x*(x+1)) >>1; 

    }

    static void q09() {
        System.out.print("수를 입력하세요 : ");
        int x= scan.nextInt();

        for(int c= 1; c<=x ; c++){
            int val=c; 
            for(int r =0; r<c; r++){  
                System.out.format("%4d",val);
                val=val+(x-r-1); 
            }
            System.out.println();
        }  
    }

    static void q10() {
        System.out.print("수를 입력하세요 : ");
        int x= scan.nextInt();

        for(int c= 1; c<=x ; c++){
            int val=c; 
            for(int r =0; r<=c; r++){  
                System.out.format("%4d",val);
                val=val-x+1; 
            }
            System.out.println();
        }  
    }

    static void q11() {
        System.out.print("수를 입력하세요 : ");
        int x= scan.nextInt();

        for(int c= 0; c<x ; c++){
            for(int r =0; r<x-c; r++){  
                System.out.print("　");

            }
            for(int r=0; r<=c; r++){
                System.out.print("ㅇ");
            }  
            System.out.println();
        }
    }

    static void q12() {
        System.out.print("수를 입력하세요 : ");
        int x= scan.nextInt();
        int c= 0;
        
        
        while(c<x){ 
            int r=0;
            int m=0;
            while(r<x-c){
                System.out.print("  ");
                r++;
            }
            
            while(m<=c){
                System.out.print("★");
                m++;
            }
            System.out.println();
            c++;
        }
    }
    
      static void q13() {
        System.out.print("수를 입력하세요 : ");
        int x= scan.nextInt();

        for(int c= 0; c<x ; c++){
            for(int r =0; r<x-c; r++){  
                System.out.print("ㅇ");

            }
      
            System.out.println();
        }
    }
    
          static void q14() {
        System.out.print("수를 입력하세요 : ");
        int x= scan.nextInt();

        for(int c= 0; c<x ; c++){
            for(int r =0; r<x-c; r++){  
                System.out.print("　");

            }
            
            
            for(int r =0; r<x-c; r++2){  
                System.out.print("ㅇ");

            }
      
            System.out.println();
        }
    }
    
}