import java.util.*;
public class FoodItem extends MenuItem
{
    String [] ingredients;
    Scanner scan = new Scanner(System.in);
    public FoodItem()
    {
        ingredients = new String[5];
    }
    
    public FoodItem(String name, String desc,double price,String prepMethod, String[] ingredients)
    {
        super(name,desc,price,prepMethod);
        this.ingredients = ingredients;
    }
    
    public String[] getIngredients() 
    {
        return ingredients;
    }
    
    public void setIngredients(String[] ingredients) 
    {
        this.ingredients = ingredients;
    }
    
    
    
     public void viewIngredients()
     {
         for(String x: ingredients)
         {
             System.out.println(x);
         
         }
        
         
     }
    
    public void addIngredient()
    {
       for(int i = 0; i < ingredients.length;i++)
       {
           System.out.println("Add ingredient: ");
           String e = scan.nextLine();
           ingredients[i] = e;
           
       } 
     
    }
    
    @Override public String getInstructions()
    {
        
        
        return "Name: " + getName() + "\n" + 
        "ingredients: " + ingredients[0]  + "," + ingredients[1] + "," + ingredients[2] + "," + ingredients[3] + "," + ingredients[4] "\n" +
        "Preparation-method: " + getPrepMethod();
    }
    
}