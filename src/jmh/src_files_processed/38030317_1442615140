import java.awt.*;
import objectdraw.*;
/**
 * ##### # ########### ## ##### ################ ####.
 * 
 * @###### ##### ######### 
 * @####### ##/##/##
 */
public class ImageManipulator extends WindowController
{
    private Picture picture;
    private VisibleImage image;
    private int height;
    private int width;
    public static final int Xstatic = 0;
    private double Y = 0;
    private double X = Xstatic;
    public double Color = pxColor

    public void begin (){
        picture = new Picture ("https:
        height = picture.getHeight();
        width = picture.getWidth();
        resize(width, height);
        image = picture.createVisibleImage(0, 30, canvas);
    }

    private void grayScale(Picture picture){

        while (Y < height)
        { X = Xstatic;
            while (X < width)
            {
                Color pixCol = picture.getPixel (X, Y);
                int pxR = pixCol.getRed();
                int pxG = pixCol.getGreen();
                int pxB = pixCol.getBlue();
                int pxGray = ((pxR + pxG + pxB)/3);
                pxColor = Color (pxGray, pxGray, pxGray);
                picture.setPixel(X, Y, pxColor);

            }

        }
    }
}