        String restingHeartRateString = in.next();
        int restingHeartRate = Integer.parseInt(restingHeartRateString);
        System.out.println();
        
        System.out.print("Enter your heart rate after exercising: ");
        String exercisedHeartRateString = in.next();
        int exercisedHeartRate = Integer.parseInt(exercisedHeartRateString);
        System.out.println();
        
        int maximumHeartRate = 220 - age;
        int heartRateReserve = maximumHeartRate - restingHeartRate;
        int upperTrainingZone = (heartRateReserve * 0.85) + restingHeartRate;
        int lowerTrainingZone = (heartRateReserve * 0.5) + restingHeartRate;
        
        System.out.print("Your heart rate target zong is between " + lowerTrainingZone + "bpm and ");
        System.out.println(upperTrainingZone + " bpm");
        
