import java.util.HashMap;
public class Room
{
    private String aDescription;
    private HashMap<String, Room> exits;

    public Room(final String pDescription)
    {
        this.aDescription=pDescription;
        exits = new HashMap<String, Room>();
    }

    public void setExits(final Room pNorthExit, final Room pWestExit, final Room pSouthExit,final Room pEastExit)
    {   
        if(pNorthExit != null) 
            exits.put("Nord", pNorthExit);
        if(pSouthExit != null) 
            exits.put("Sud", pSouthExit);
        if(pEastExit != null) 
            exits.put("Est", pEastExit);
        if(pWestExit !=null) 
            exits.put("Ouest", pWestExit);
    }

    public Room getExit(String pDirection){
       return exits.get(direction);
    }

    public String getDescription(){
        return aDescription;
    }
}    