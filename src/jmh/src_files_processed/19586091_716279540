/**
/* @###### (##### ####### ######## #######)
/* ######## ### ######## ### ##### ## ### #######
*/
public class Cuenta{
   /**
   /*Atributos
   */
   private String identificador;
   private int capacidad;
   private char personalizacion;
   private boolean activo;
   private Usuario usuario;
   /**
   /*Constructor de la clase con parametros
   */
   public Cuenta(String identificador, int capacidad, char personalizacion, boolean activo, Usuario usuario){
   /**
   /* Regla de negocio 2 y 3
   */
   if(personalizacion=='s' || personalizacion=='n' && (capacidad>=0 && capacidad<=100)){
        this.identificador=identificador;
        this.capacidad=capacidad;
        this.personalizacion=personalizacion;
        this.activo=activo;
        this.usuario= usuario;
   }else{
        System.out.println("No se pudo crear la instancia porque no cumple con regla de negocio");
   }
    }
    /**
    /*Constructor de la clase sin parametros
    */
    public Cuenta(){
        this.identificador="";
        this.capacidad=0;
        this.personalizacion=' ';
        this.activo=false;
        this.usuario= new Usuario();
    }
    /**
    /*Metodos Getter y setter
    */
    public void setIdentificador(String identificador){
        this.identificador=identificador;
    }
    public String getIdentificador(){
        return this.identificador;
    }
    public void setCapacidad(int capacidad){
        if (capacidad>=0 && capacidad<=100){
        this.capacidad=capacidad;
    }
    }
    public int getCapacidad(){
        return this.capacidad;
    }
    public void setPersonalizacion(char personalizacion){
       if( personalizacion=='s' || personalizacion=='n'){
        this.personalizacion=personalizacion;
    }
    }
    public char getPersonalizacion(){
        return this.personalizacion;
    }
    public void setActivo(boolean activo){
        this.activo=activo;
    }
    public boolean getActivo(){
        return this.activo;
    }
    public void setUsuario(Usuario usuario){
        this.usuario=usuario;
    }
    public Usuario getUsuaro(){
     return this.usuario;
    }
    /**
	 * Metodo impresiÃ³n datos
	 */
	public String impresionDatos(){
		return "Cuenta [identificador="+this.identificador+", capacidad="+this.capacidad+", personalizacion="+this.personalizacion+", activo="+this.activo+", usuario="+this.usuario.impresionDatos();+"]";
	}
     /**
     /*Metodos Costumer
     */
     /**
     /*Metodo Listar Datos
     */
    public void listarDatos(){
    System.out.println("___________________________________");
        if (this.personalizacion=='s'){
        System.out.println("nombre: "+this.usuario.getNombre()+", capacidad: "+this.capacidad+"GB, Personalizada");
    }else{
        System.out.println("nombre: "+this.usuario.getNombre()+", capacidad: "+this.capacidad+"GB, No Personalizada");
    }
    System.out.println("___________________________________");
    }
    /**
    /*Metodo obtener capacidad disponible
    */
    public int obtenerCapacidadDisponible(){
        if(this.activo){
            return 100 - this.capacidad;
        }else{
            return 0;
        }
    }
}
    

   