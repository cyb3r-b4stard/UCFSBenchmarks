package dungeonGame.dungeonElements.entities;

import dungeonGame.GraphicalInterface.GameImage;
import dungeonGame.dungeonElements.*;

/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Monster extends MovingEntity
{
    public Monster (int row, int col, GameImage  displayImg, int awakeLevel, int manaLevel, boolean canUsePowerUps)
    {
        manaLevel = 0;
        super(row, col, displayImg, awakeLevel, manaLevel, canUsePowerUps);
    }

    	public boolean canUsePowers() { return !usePowerUps; }
    
    /**
     * When called this method executes the move
     * operation of the entity. Once completed
     * the entity's location and state should be updated and the object will
     * have moved its own reference in the Dungeon to its new location
     */
    public void move()
    {	

    }
}
