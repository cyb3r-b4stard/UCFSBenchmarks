/**
 * #### ## # ##### ## ######### # ######
 * 
 * @###### #####
 */
public class Person
{
    private String myName;
    private int myAge;
    
    /**
     * Constructs a Person with given name and age
     * 
     */
    public Person(String theName, int theAge)
    {
        myName = theName;
        myAge = theAge;
    }
    
    public Person()
    {
        myName = "John Doe";
        myAge = 25;
    }
    
    public String getName()
    {
        return myName;
    }
    
    public void changeName(String newName)
    {
        myName = newName;
    }
    
    public void haveBirthday()
    {
        myAge = myAge + 1;
    }
    
    public String getCapitalName()
    {
        String temp = myName.toUppercase;
    }
    
    public int getLengthOfName()
    {
        return myName.length();
    }
    
    public String getFirstLetterOfName()
    {
        return.myName;
    }
}

        