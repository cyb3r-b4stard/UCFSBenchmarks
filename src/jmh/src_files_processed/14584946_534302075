import java.util.Scanner;
import java.text.DecimalFormat;
/*
 * ###### ######
 * #################.####
 * #### ####### ##### ### ### ##### ## ### ### ##### ####### ##### ## #### #####
 */
public class CafShoppingGordon
{
    public static void main (String[]args)throws Exception
    {
        System.out.println("Welcome to the Cafeteria! Here is our menu:");
        Thread.sleep(3000);
        System.out.println("\fCookie - $.65");
        System.out.println("Pizza - $1.25");
        System.out.println("Smoothie - $3.50");
        System.out.println("Chips - $.75");
        System.out.println("Sandwich - 2.25");
        System.out.println("Water - 1.00");
        System.out.println("Salad - 4.00");
        System.out.println("Soda - 3.00");
        System.out.println("Bagel - 2.50");

        DecimalFormat df = new DecimalFormat("0.00");
        Scanner reader = new Scanner(System.in);
        Scanner numreader = new Scanner(System.in);
        System.out.println("What is your name?");
        String name = reader.nextLine();
        System.out.println("How much money do you have?");
        double money = numreader.nextDouble();
        System.out.println("OK, " + name + ", let's get started!");
        Thread.sleep(2000);
        System.out.println("\fCookie - $.65");
        System.out.println("Pizza - $1.25");
        System.out.println("Smoothie - $3.50");
        System.out.println("Chips - $.75");
        System.out.println("Sandwich - 2.25");
        System.out.println("Water - 1.00");
        System.out.println("Salad - 4.00");
        System.out.println("Fries - 2.00");
        System.out.println("Bagel - 2.50");
        System.out.println("\n What do you want to buy first? Type your response. Type done when you are done");
        
        String order = reader.nextLine();
        while (!order.equals("done"))
        {
            if (money<.65)
            {
                System.out.println("You can't afford anything else.";
            }
            if (order.equals("Cookie"))
            {
                System.out.println("How many Cookies?");
                int foodnum = numreader.nextInt();
                money -= .65*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
                order = reader.nextLine();

            }
            else if(order.equals("Pizza"))
            {
                System.out.println("How many Pizzas?");
                int foodnum = numreader.nextInt();
                money -= 1.25*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
               order = reader.nextLine();
            }

            else if (order.equals("Smoothie"))
            {
                System.out.println("How many Smoothies?");
                int foodnum = numreader.nextInt();
                money -= 3.5*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
                order = reader.nextLine();
            }
            else if (order.equals("Chips"))
            {
                System.out.println("How many bags of Chips?");
                int foodnum = numreader.nextInt();
                money -= .75*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
               order = reader.nextLine();
            }
            else if (order.equals("Sandwich"))
            {
                System.out.println("How many Sandwiches?");
                int foodnum = numreader.nextInt();
                money -= 2.25*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
               order = reader.nextLine();
            }
            else if (order.equals("Water"))
            {
                System.out.println("How many bottles of Water?");
                int foodnum = numreader.nextInt();
                money -= 1*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
                order = reader.nextLine();
            }
            else if (order.equals("Salad"))
            {
                System.out.println("How many Salads?");
                int foodnum = numreader.nextInt();
                money -= 4*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
                order = reader.nextLine();
            }
            else if (order.equals("Fries"))
            {
                System.out.println("How many cartons of Fries?");
                int foodnum = numreader.nextInt();
                money -= 2*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
                order = reader.nextLine();
            }
            else if (order.equals("Bagel"))

            {
                System.out.println("How many Bagels?");
                int foodnum = numreader.nextInt();
                money -= 2.5*foodnum;
                System.out.println("Ok! Your balance is $" + (df.format(money)) + ". What else do you want to buy?");
                order = reader.nextLine();
            }

            else
            {
                System.out.println("That is not a valid response. Please remember to use upper case letters and to spell things just as they appear on the menu.");
                order = reader.nextLine();
            }
            
        }

    }
}