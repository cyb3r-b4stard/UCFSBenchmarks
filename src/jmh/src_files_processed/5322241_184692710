public class RomanNumeral {
    private char[] romanNumerals;
    private int value;

    public RomanNumeral(int newValue){
    this.value = newValue;

    int numeralPosition = 0;
    romanNumerals = new char[100];
    while (newValue > 0) {
            if (newValue >=1000) {
            romanNumerals[numeralPosition] = 'M';
            numeralPosition++;
            newValue -= 1000;
        }   else if (newValue >= 900) {
            romanNumerals[numeralPosition] = 'C';
            numeralPosition++;
            romanNumerals[numeralPosition] = 'M';
            numeralPosition++;
            newvValue -=900;
        }

        public String getRomanNumeral() {
            return "";
        }

        public int getValue() {
            return -1;
        }

        public void setRomanNumerals(char[] romanNumerals) {
        }

        public void setValue(int value) {
        }



    }

