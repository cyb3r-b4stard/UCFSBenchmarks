import javax.swing.*; 
import java.awt.*;    
import java.awt.event.*; 

/**
   #### ##### ############ ### ###### ### ## ##### ##
   ### ##### ####### ## # ########## #######.
*/

public class guiMenu extends JFrame
{
   private final int WINDOW_WIDTH = 800;   
   private final int WINDOW_HEIGHT = 800;  
   private JButton button1; 
   private JButton button2; 
   private JButton PropertySQF;
   private JButton TaxesDue;
   private JButton button5;
   private JButton button6;
   private JButton button7;

   /**
      Constructor
   */

   public guiMenu()
   {
      setTitle("Java Real Estate Sales");

      setSize(WINDOW_WIDTH, WINDOW_HEIGHT);

      setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

      setLayout(new GridLayout(7, 2));

      button1 = new JButton("Add/Edit Property Information");
      button2 = new JButton("Add/Edit Agent");
      PropertySQF = new JButton("Calculate SQF");
      TaxesDue = new JButton("Calculate Tax");
      button5 = new JButton("Sales Analysis");
      button6 = new JButton("Calculate Commission");
      button7 =  new JButton("Exit");

      JLabel label1 = new JLabel("Property Information");
      JLabel label2 = new JLabel("Agent");
      JLabel label3 = new JLabel("Square Feet");
      JLabel label4 = new JLabel("Tax");
      JLabel label5 = new JLabel("Sales Analysis");
      JLabel label6 = new JLabel("Commission");
      JLabel label7 = new JLabel("Exit");

      JPanel panel1 = new JPanel();
      JPanel panel2 = new JPanel();
      JPanel panel3 = new JPanel();
      JPanel panel4 = new JPanel();
      JPanel panel5 = new JPanel();
      JPanel panel6 = new JPanel();
      JPanel panel7 = new JPanel();
      panel1.add(label1);
      panel2.add(label2);
      panel3.add(label3);
      panel4.add(label4);
      panel5.add(label5);
      panel6.add(label6);
      panel7.add(label7);
      button2.addActionListener(new ButtonListener());
      PropertySQF.addActionListener(new ButtonListener());
      TaxesDue.addActionListener(new ButtonListener());

      panel1.add(button1);
      panel2.add(button2);
      panel3.add(PropertySQF);
      panel4.add(TaxesDue);
      panel5.add(button5);
      panel6.add(button6);
      panel7.add(button7);

      add(panel1);  
      add(panel2);  
      add(panel3);  
      add(panel4);  
      add(panel5);  
      add(panel6);  
      add(panel7);
      
      setVisible(true);
   }
   
   

   /**
      Private inner class that handles the event when
      the user clicks a button.
   */

   private class ButtonListener implements ActionListener
   {
      public void actionPerformed(ActionEvent e)
      {
         
       PropertySQF pSQF = new PropertySQF(); 
       TaxesDue taxDue = new TaxesDue();  
      
       
         
         
         if (e.getSource() == TaxesDue)
         {
             taxDue.startTaxes();
         }
         else if (e.getSource() == button2)
         {
            JOptionPane.showMessageDialog(null, "You clicked " +
                                          "the second button.");
         }
         else if (e.getSource() == PropertySQF)
         {
            PropertySQF.start
         }
     
      }
   }
   
   
   /**
      The main method creates an instance of the
      GridPanelWindow class, displaying its window.
   */
   
   public static void main(String[] args)
   {
      new guiMenu();
      
       PropertySQF pSQF = new PropertySQF(); 
       TaxesDue taxDue = new TaxesDue();  
      
       
   }
}