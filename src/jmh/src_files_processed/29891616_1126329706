public class Barrel
{
    private double capaciteit;
    private double inhoud; 
    public Barrel( double capaciteit, double huidigeinhoud)
    {
        if (huidigeinhoud == 0)
        {
            this.capaciteit = capaciteit;
            this.inhoud = 0;
        }
        else
        {
            this.inhoud = huidigeinhoud;
            this.capaciteit = capaciteit;
        }
    }

    public double vullen(double amount)
    {
        if (amount > 0)
        {
            inhoud = inhoud + amount;
            if(inhoud > capaciteit)
            {
                inhoud = capaciteit;
            }
            else
            {
                inhoud = inhoud + amount; 
            }
        }
        else
        {
           inhoud = inhoud;
        }
        return inhoud; 
    }  
public double aftappen(double amount)
{
 return inhoud
}
}
