public class Phone {
    public Phone(String manufacturer, String model, String carrier, String color, double cost,)  {
        _manufacturer = manufacturer;
        _model        = model;
        _carrier      = carrier;
        _color        = color;
        _cost         = cost;
    }

    public String toString() { 
        return "The mobile phone features are: " + _model  + "by" + _manufacturer + "carrier" +  _carrier + "$" + _cost  + "color" +  _color;                              
    }

     public static void main(String [] args) {
         Phone samsung = new Phone ("Samsung" , "s3"        , "t-mobile",  "black", "550.00",);
         Phone htc =   new Phone ("htc"       , "one"       , "verizon" "blue " , "600.00");
         Phone lg  =   new Phone ("lg"        , "lucent"    , "sprint"  , "red  " "350.00");
         
         
         system.out.println(samsung);
         system.out.println(htc);
         system.out.println(lg);
         
         }                                           
                
     
         
         private String _manufacturer, _model, _carrier, _cost, _color;
}