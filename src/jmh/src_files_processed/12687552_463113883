    public static double[] makePythagoreanTriple(int m, int n)
    { double a, b, c;
        if(m - n < 0)
        {int temp = m;
            m = n;
            n = temp;}
        a = Math.pow(2, m) - Math.pow(2, n);
        b = 2*m*n;
        c = Math.pow(2, m) + Math.pow(2, n);
        double[] list = new double[3];
        list[0] = a;
        list[1] = b;
        list[2] = c;
        return list;
    }

