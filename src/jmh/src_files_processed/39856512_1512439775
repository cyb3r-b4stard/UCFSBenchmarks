import java.util.ArrayList;
public class BargainCustomer implements Customer
{
    private int availableCost;
    private int remainingCost;
    public BargainCustomer(int n)
    {
        availableCost =n;
    }

    public Car purchase(ArrayList<Car> listOfCars)
    {
        int i = 0;
        int b=0;
        if(listOfCars.size() > 0)
        {
            while(b<1)
            {
                for(Car c: listOfCars)
                {
                    if(availableCost>=c.getBasePrice())
                    {
                        remainingCost =availableCost-c.getBasePrice();
                        i = listOfCars.indexOf(c);
                        b=1;
                    }
                }
            }
            return listOfCars.get(i);
        }
        else
        {
            return null;
        }
    }

    public void upgrade(Car c3)
    {
        int feature1Cost =c3.getFeatures().get(0).getCost();
        if(c3.getFeatures().size() > 0 && remainingCost >)
        {         

            c3.getFeatures().get(0).purchase();

        }
    }

}