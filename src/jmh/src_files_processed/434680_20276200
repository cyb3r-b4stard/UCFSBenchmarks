
public class Gun
{
    private int position;
    private int power;
    private int points;
    private boolean justFired;

    public Gun(int getPosition, int power)
    {
        this.position = getPosition;
        this.power = power;
    }
    
    public int getPosition()
    {
        return position;
    }
    
    public void move(int distance)
    {
        if (position !=6 || position !=-6)
            position = position + distance;
        
    }
    
    public int toInt()
    {
        return points;
    }
    
    public void shoot()
    {
        justFired = true;
        
    }
    }
}