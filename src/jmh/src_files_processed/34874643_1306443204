class Controller
{
    Automat automat;
    public int Auswahl;
   Controller(Automat a)
   {
    automat = a;
    Auswahl = new int(1);
   }
   public boolean Cola(Automat a)
   {    
       boolean x =true;
       boolean y = false;
       if (a.ColaAnzahl() > 0)
       {
           return x;
           Auswahl = 1;
       }
       else
       {
           return y;
           Auswahl = 0;
        }
    }
     
   public boolean Wasser(Automat a)
   {
       boolean x =true;
       boolean y=false;
       if (a.WasserAnzahl() > 0)
       {
           return x;
       }
       else
       {
           return y;
        }
        Auswahl = 2;
    }
   public boolean Limo(Automat a)
   {
       boolean x =true;
       boolean y=false;
       if (a.LimoAnzahl() > 0)
       {
           return x;
       }
       else
       {
           return y;
        }
        Auswahl = 3;
    }
   public String Auswahl()
   {
       if(Auswahl == 0)
       {
           String x = "Kein Getränk gewählt!";
           return x;
        }
        else
        {
            if(Auswahl == 1)
            {
                String x = "Bitte entnehmen sie ihr Getränk(Cola)!";
                return x;
            }
            else
            {
                if(Auswahl == 2)
                {
                String x = "Bitte entnehmen sie ihr Getränk(Wasser)!";
                return x;
            }
            else
            {
                String x = "Bitte entnehmen sie ihr Getränk(Limo)!";
                return x;
            }
            }
    }
    }
  
}