import java.awt.GridLayout;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;


public class CustomerBooking extends JFrame{
    private JLabel Name;
    private JTextField IDName;
    private JLabel Address;
    private JTextField IDAddress;
    private JLabel DestinationAddress;
    private JTextField IDDestinationAddress;
    private JLabel Date;
    private JTextField IDDate;
    private JLabel Time;
    private JTextField IDText;
        public CustomerBooking() {
        super("Customer Booking");
        setLayout(new GridLayout());
        Name = new JLabel("Name:");
        IDName = new JTextField
        Address = new JLabel("Address:");
        IDAddress = new JTextField
        DestinationAddress = new JLabel("Destination Address:");
        IDDestinationAddress = new JTextField
        Date = new JLabel("Date:");
        IDDate = new JTextField
        Time = new JLabel("Time:");
        IDTime = new JTextField
        add(Name);
        add(Address);
        add(DestinationAddress);
        add(Date);
        add(Time);
        

    }
}

