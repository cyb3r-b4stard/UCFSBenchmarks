public class CashRegister
{
    private double totalMoney;
    private int itemNum;
    private double taxable;
    private String receipt;
    
    public CashRegister(double totalmoney, int numberofitems, double taxrate)
    {
        totalMoney = totalmoney;
        itemNum = numberofitems;
        taxable = taxrate;
    }
    public double getTotalMoney()
    {
        return totalMoney;
    }
    public int getNumberOfItems()
    {
        return itemNum;
    }
    public double getPrice()
    {
        return purchase;
    }
    public double getTax()
    {
        return taxable;
    }
    public double addItem(double payment, double price)
    {
        totalMoney = totalMoney + (price*(taxable/100));
        itemNum = itemNum + 1;
        price2 = price
        String item = String.valueOf(price2);
        receipt = item.concat(String.valueOf(price2));
        double change = payment - (price + (price*(taxable/100))) ;
        payment = 0;
        purchase = 0;
        return change;
    }
    public void deleteItem()
    {
        totalMoney = totalMoney - purchase2;
        itemNum = itemNum - 1;
    }
    public String printReceipt()
    {
        return receipt;
    }
    public void reset()
    {
        totalMoney = 0;
        itemNum = 0;
    }
}
        