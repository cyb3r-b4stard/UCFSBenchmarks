public class Godel
{
    public static void main(String[]args)
    {
        int ON=Console.readInt("Please enter a positive integer");
        while (ON>0)
        {
            if (even_0N%=0)
               {
                   int New =ON/2;
                   System.out.println(""+ON+" is even, so I take half: " +New+);
                   ON=New;
                }
            if (odd_ON%=1)
              {
                  New=3*ON+1;
                  System.out.println(" "+ ON+ " is odd so I make 3n+1: "+New+);
                  ON=New;
                }
            }
        }
    }
            
                   