import java.util.Scanner;
public class multiScanner
{
    private Scanner intScanner;
    private int myInt;
    
    public multiScanner()
    {
        intScanner = new Scanner(System.in);
    }
    
    public int takeInt()
    {
        System.out.println("Enter your number .");
        myInt = intScanner.nextInt();
        return = myInt;
    }
}