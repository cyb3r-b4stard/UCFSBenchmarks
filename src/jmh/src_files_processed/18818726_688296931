import comp102x.IO;

public class Lab02
{
    
    public static void multiply()
    {
        int x;
        int y;
        IO.output("Enter an integer, x: ");
        x = IO.inputInteger();
        IO.output("Enter an integer, y: ");
        y = IO.inputInteger();
        
        int Answer;
        Answer = x * y;
        IO.outputln("Anwser = " + Answer);
        
        
        
    }
    
    public static void calculateTriangleArea()
    {
        int width,height;
        double area;
        
        IO.output("Enter the width of the triangle: ");
        width = IO.inputInteger();
        IO.output("Enter the width of the triangle: ");
        height = IO.inputInteger();
        
        area = ( width * height ) / 2.0;
        
        IO.outputln("The triangle area = " + area );
        
        
        
        
    }
    
    public static void solveQuadraticEquation()
    {
        int a , b , c;
        double x1 , x2;
        
       IO.output("Enter a: ")
       a = IO.inputInteger();
       b = IO.inpitInteger();
       C = IO.inputInteger();
       
       x1 = (-b - java.lang.Math.sqrt(b*b-4*a*c))/2*a;
       x2 = (-b + java.lang.Math.sqrt(b*b-4*a*c))/2*a;
       IO.output("First solution for x = " + x1);
       IO.output("second solution for x = " + x2);
       
       
        
        
    }
}