
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (##### ########) 
 * @####### ()
 */
public class BusStop
{
    private BusArrival [] _buses; 
    private int _noOfBuses;
    final int[] MAXINT= new int [1000];
   
    /**
     * Constructor for objects of class BusStop.
     * Creates new array with max of 1000 cells, for bus arrivals.
     * @param _noOfBuses - The number of bus arrivals is initialized.
     * @param _buses - Array with bus arrivals. 
     */
    public BusStop()
    {
        _buses = new BusArrival [];
        _noOfBuses = 0;
    }

    /**
     * This constructor creates an array with bus arrival data.
     * @param _buses - Array with bus arrivals, defined by integer "size".
     * @param _noOfBuses - The number of bus arrivals is initialized.
     */
    public BusStop (int size)
    {
       _buses = new BusArrival[size];
       _noOfBuses = 0;
    }
     
    /**
     * 
     * 
     * @param _noOfBuses - The number of bus arrivals.
     * @return   
     */
     int getNoOfBuses()
    {
        return _noOfBuses;
    }
    
    /**
     * 
     * 
     *@return the copy of array "_buses".
     */
    BusArrival[] getBuses()
    {
       copyArray = new BusArrival [size];
       return copyArray; 
    }
}