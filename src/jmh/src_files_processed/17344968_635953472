
public class EmployeeList
{
  private Employee[] EmployeeArray;
  private int total; 
  
  public EmployeeList(int sizeIn)
  {
    EmployeeArray = new Employee[sizeIn];
    total = 0;
  }

  public boolean add(Employee EmployeeArrayIn)
  {
    if (!isFull())
    {
      EmployeeArray[total] = EmployeeArrayIn;
      total++; 
      return true; 
    }
    else
    {
      return false;
    }
  }
  
  public boolean remove(String Number)
   {
      int index = search(Number);
      if (index == -999)
        {
            return false;
        }
        else 
        {
            for (int i = index; i < total - 1; i++)
            {
                EmployeeArray[index] = EmployeeArray[index+1];
            }
            total--;
            return true;
        }
    }
  
      public boolean isEmpty()
  {
    if (total == 0)
    {
      return true;
    }
    else
    {
      return false;
    }
  }
  
    public boolean isFull()
  {
    if (total == EmployeeArray.length)
    {
      return true; 
    }
    else
    {
      return false;
    }
  }
    
    public boolean addadditional(Employee EmployeeArrayIn)
  {
    if (!isFull())
    {
      EmployeeArray[total] = EmployeeArrayIn;
      total++; 
      return true; 
    }
    else
    {
      return false;
    }
  }
  
  public String list()
  {
     String list = "";
     if (!isEmpty())
     {
        for (int i = 0; i < total; i++)
        {
            list = list + "Employee number: " + EmployeeArray[i].getNumber() + 
                          ",Employee name : " + EmployeeArray[i].getName() +
                          ", Age: " + EmployeeArray[i].getAge() +
                          ", Department: " + EmployeeArray[i].getDepartment() +
                          ", YearsofService: " + EmployeeArray[i].getYearsofService() +
                          ", Grade: " + EmployeeArray[i].getGrade() +
                          ". \n";
        }
     }
     return list;
  }
  
  private int search(String Number)
    {
        for (int i = 0; i < total; i++)
        {
            if (EmployeeArray[i].getNumber().equals(Number))
            {
                return i;
            }
        }
        return -999;
    }
    
 public Employee oldestEmployee()
 {
    Employee tempEmployee = null;
    if(!isEmpty())
    {
        tempEmployee=EmployeeArray[0];
      for(int i =1; i<total; i++)
      {
        if(EmployeeArray[i] getAge > tempEmployee.getAge())
        {
                tempEmployee = EmployeeArray[i];
        }
      }
      return tempEmployee;
    }
 }
 
  public Employee youngestEmployee()
 {
    Employee tempEmployee = null;
    if(!isEmpty())
    {
        tempEmployee=EmployeeArray[0];
      for(int i =1; i<total; i++)
      {
        if(EmployeeArray[i].getAge < tempEmployee.getAge())
        {
                tempEmployee = EmployeeArray[i];
        }
      }
      return tempEmployee;
    }
 }

 public void updateEmployee()
 {
    Employee.setYearsofService(1);
    System.out.println("All employees years of Service have been Updated!");
 }

    
    public Employee getItem(String Number)
    {
        int index = search(Number);
        if (index == -999)
        {
            return null;
        }
        else
        {
            return EmployeeArray[index];
        }
    }
}
