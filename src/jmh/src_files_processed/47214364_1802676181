import java.util.Scanner;
public class PasswordValidator
{
    public static boolean p1(String password)
    {
        boolean correct = false;
        if (password.length() - 1 >= 7)
        {
            for (int i = 0; i < password.length(); i++)
            {
                char current = password.charAt(i);
                if (current == '1' || current == '2' || current == '3' || current == '4' || current == '5'
                || current == '6' || current == '7' || current == '8' || current == '9' || current == '0')
                {
                    
                    for (int q = 0; q < password.length(); q++)
                    {
                        current = password.charAt(q);

                        if (current == 'A' || current == 'B' || current == 'C' || current == 'D' || current == 'E' ||
                        current == 'F' || current == 'G' || current == 'H' || current == 'I' || current == 'J' ||
                        current == 'K' || current == 'L' || current == 'M' || current == 'N' || current == 'O' ||
                        current == 'P' || current == 'Q' || current == 'R' || current == 'S' || current == 'T' || 
                        current == 'U' || current == 'V' || current == 'W' || current == 'X' || current == 'Y' ||
                        current == 'Z')
                        {
                            if (current == 'a' || current == 'b' || current == 'c' || current == 'd' || 
                            current == 'e' || current == 'f' || current == 'g' || current == 'h' || current == 'i' ||
                            current == 'j' || current == 'k' || current == 'l' || current == 'm' || current == 'n' ||
                            current == 'o' || current == 'p' || current == 'q' || current == 'r' || current == 's' ||
                            current == 't' || current == 'u' || current == 'v' || current == 'w' || current == 'x' ||
                            current == 'y' || current == 'z')
                            {
                                correct = true;
                            }

                        }
                }
            }
        }

        return correct;
    }

    public static boolean p2(String validator)
    {
        boolean v = false;
        return v;
    }

    public static void main (String[] args)
    {
        System.out.println("Enter your password: ");
        Scanner in = new Scanner(System.in);
        String pass = in.nextLine();
        if (p1(pass) == true)
        {
            System.out.print("Password matches all cases.");
        }
        if (p1(pass) == false)
        {
            System.out.print("Error. Your password must: contain at least 8 characters, at least 1 capital letter" + 
                ", at least 1 lower case letter, and at least 1 number.");

        }
    }
}