class Student
{
  private int num;
  private int grade1;
  private int grade2;  
  
 public Student(int n, int grd1, int grd2)
 {num=n;
  grade1=grd1;
  grade2=grd2;  
 }
 
 public int getNum()
 {
  return num;
 }   
 public int getGrade1()
 {
   return grade1;
 }    
  public int getGrade2()
 {
   return grade2;
 }  
 
 public void setNum()
 {
  num=n;
 }
 public void setGrade1()
 {
  grade1=grd1;
 }
  public void setGrade2()
 {
  grade2=grd2;
 }
 
 public string toString()
 {
     return "לתלמיד מספר: " +this.num +" הציון הראשון הוא: "+ grade1 +" והציון השני הוא: ";
 }
 
 int avg()
 {
   return "ממוצע התלמיד: " +(grade1+grade2)/2  
 }
 
 
}