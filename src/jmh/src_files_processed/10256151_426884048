
import sum.kern.*;
/**
 * @###### ##### 
 * @####### ##.#.####
 */
public class Meinprogramm
{ 

    Bildschirm derBildschirm;
    Stift meinStift;
    Maus dieMaus;

    public Meinprogramm()
    {
        derBildschirm = new Bildschirm(500,600);
        meinStift = new Stift();
        dieMaus = new Maus();
    }

    public void fuehreAus()
    {
       meinStift.runter();
        do
        {if ((dieMaus.istGedrueckt())
        {meinStift.bewegeBis(dieMaus.hPosition(),dieMaus.vPosition());meinStift.zeicheKreis(3);
        }   
        } while (!dieMaus.istGedrueckt());
     
     
        

       dieMaus.gibFrei();
       derBildschirm.gibFrei();
       meinStift.gibFrei();
    
    
    }
}