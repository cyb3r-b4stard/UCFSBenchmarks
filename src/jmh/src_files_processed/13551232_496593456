class NWTProjekt
{
    String stimm;
    String gut;
    String schlecht;
    String a;
    String b;
    String c;
    String gr;
    /**
     * 1.Frage: Bist du gut drauf oder schlecht drauf ?
     * Grund für gut: Geburtstag (a) oder verliebt (b) oder einfach so halt (c)
     * Grund für schlecht: Tod (a) oder Streit (b) oder einfach so (c)
     */
    public NWTProjekt(String stimmung,String grund)
    {
        stimm=stimmung;
        gr=grund;
        verzweigung();
    }
    public void verzweigung()
    {
       if (stimm==gut)
      {
         System.out.println ("Wähle einen der Gründe.");
         if (gr==a)
            {
                System.out.println ("Höre dir Happy Birthday an.");
            }
            else
            {
                if (gr==b)
                {
                    System.out.println ("Höre dir Love is in the air an.");
                }
                else
                {
                    if (gr==c)
                    {
                    System.out.println ("Wie wäre es mit Atomlos, das geht immer.");
                    }
                     else
                      {
                         System.out.println ("Ungültiger String.");
                      }
                }
            }
      }
      if (stimm==schlecht)
        {
           System.out.println ("Wähle einen der Gründe.");
           if (gr==a)
           {
               System.out.println ("Du könntest time to say good bye anhören, das hilft.");
           }
           else
           {
               if (gr==b)
               {
                   System.out.println ("Hör dir doch das Lied Auf anderen Wegen an.");
               }
                else
                {
                    System.out.println ("Wolke 7 wäre für dich geeignet.");
                }
           }
       }
    }
         
    }
}
    



        
        
                
                
                    
            
        