import sum.werkzeuge.*;
import sum.kern.*;

public class AMPEL
{
    
    Buntstift meinStift;
    Uhr uhr;
    int posx;
    int posy;

    public AMPEL()
    {
       meinStift = new Buntstift();
       uhr = new Uhr();
       fuehreAus();
    }

    public void position(int x, int y)
    {
        meinStift.bewegeBis(x,y);
        posx=x;
        posy=y;
    }

    public void fuehreAus()
    {
        
        meinStift.zeichneRechteck(40,60);
        meinStift.bewegeBis(posx +20, posy +15);
        meinStift.setzeFuellMuster(Muster.GEFUELLT);
        mein.Stift setzeFarbe(Farbe.GRUEN);
        meinStift.zeichneKreis(15);
        uhr.warte(50);
        
        meinStift.bewegeBis (posx +20, posy +45);
        meinStift.zeichneKreis(15);

    }

}
