import java.util.Scanner;
import java.util.ArrayList;
/**
 * ##### # ########### ## ##### ########### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class GradeSorter
{
     ArrayList<Student> students = new ArrayList();  
     public String "will";

    /**
     * Constructor for objects of class GradeSorter
     */
    class Student {
          String name;
          int    score;
          
          public Student() {
          }
          
          public int getScore() {
              return score;
          }
          
          public void setScore(int score) {
              this.score=score;
          }
          
          public String getName() {
              return name;
          }
          
          public void setName(String name) {
              this.name=name;
          }          
    }
    public  GradeSorter() {
        Student student1 = new Student();
        student1.setName("Alex");
        student1.setScore((int)(Math.random()*101));
        students.add(student1);
        Student student2 = new Student();        
        student2.setName("Juan");  
        student2.setScore((int)(Math.random()*101));        
        students.add(student2);
        Student student3 = new Student();  
        student3.setName("Bob");  
        student3.setScore((int)(Math.random()*101));        
        students.add(student3); 
        Student student4 = new Student();  
        student4.setName("Pete");  
        student4.setScore((int)(Math.random()*101));  
        students.add(student4); 
        Student student5 = new Student(); 
        student5.setName("Varun");  
        student5.setScore((int)(Math.random()*101));        
        students.add(student5); 
        Student student6 = new Student(); 
        student6.setName("Shank");  
        student6.setScore((int)(Math.random()*101));        
        students.add(student6); 
        Student student7 = new Student(); 
        student7.setName("Osama");  
        student7.setScore((int)(Math.random()*101));        
        students.add(student7); 
        Student student8 = new Student();  
        student8.setName("Martin Luther");  
        student8.setScore((int)(Math.random()*101));        
        students.add(student8); 
        Student student9 = new Student();  
        student9.setName("Harriet Tubman");  
        student9.setScore((int)(Math.random()*101));        
        students.add(student9); 
        Student student10 = new Student();  
        student10.setName("Edward Snowden");  
        student10.setScore((int)(Math.random()*101));        
        students.add(student10);  
    }

    public void sort() {
        for (int i=0;i<students.size()-1;i++){
            int index =i;
            int smallestNumber=students.get(i).getScore();
            for (int j=i+1;j<students.size();j++){
                if (students.get(j).getScore()<smallestNumber) {
                   index=j;
                   smallestNumber=students.get(j).getScore();
                }
            }
            Student holdStudent=students.get(index);
            students.set(index,students.get(i));
            students.set(i,holdStudent);
            
        }
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void gradeReport()
    {
        sort();
        Scanner stdt = new Scanner(System.in);
        System.out.println("How many bright students' grades do you want to see?");
        int i = stdt.nextInt()-1;
        for(int k = 0; k <= i; k++)
        {
         System.out.println(students.get(k).getName() + " earned a " + students.get(k).getScore() + "% in Computer Science.");
        } 
    }
    
    
}

    
