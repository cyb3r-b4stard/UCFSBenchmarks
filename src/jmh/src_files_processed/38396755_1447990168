/*************************************************************
 * ######## ##### {@#### #####} ########### ...
 *
 * @######  #### ####
 * @####### #.##.### ####-##-##
 */
public class Osoba {
  public static final Barva BARVA_HLAVY=Barva.RUZOVA;
  public static final Barva IMPL_BARVA_TELA = Barva.SEDA;
  public static final int IMPL_VELIKOST_HLAVY = 60;
  public static final double POMER_HLAVA_TELO = 6.0/8.0;
  public static final double POMER_TELO_VYS_SIR = 8.0/7.0;



  private Elipsa hlava;
  private Obdelnik telo;
  private static int pocet = 0;
  private final int PORADI = ++pocet;
  private final String NAZEV = "Osoba_" + PORADI;
  /*********************************************************
   *
   */
  public Osoba() {
  }
  public Osoba(int x, int y, int velikostHlavy,double pomerHlavaTelo, double pomerTelo,Barva barvaTela) 
  {
   int sirkaTela = (int) (velikostHlavy / pomerHlavaTelo);
   int vyskaTela = (int) (sirkaTela / pomerTelo);
   int posun = (Math.abs(velikostHlavy - vyskaTela)/2);
   int xPosunHlavy = (velikostHlavy > sirkaTela) ? posun : 0;
   int xPosunTela = (velikostHlavy > sirkaTela) ? 0 : posun;
   hlava = new Elipsa(x + xPosunHlavy, y, velikostHlavy, velikostHlavy,BARVA_HLAVY);
   telo = new Obdelnik(x + xPosunTela, y + velikostHlavy, vyskaTela, sirkaTela,barvaTela);
  }
  public String getNazev()
  {
    return this.NAZEV;
  }
  public int getX()
  {
   return this.getX();
  }
  public int getY()
  {
   return this.getY();
  }
  public int getSirka()
  {
   return hlava.getSirka() + telo.getSirka();
  }
  public int getVyska()
  {
   return hlava.getVyska() + telo.getVyska();
  }
  public Elipsa getHlava()
  {
    return this*;
  }
  public Obdelnik getTelo()
  {
    return this*;
  }


}