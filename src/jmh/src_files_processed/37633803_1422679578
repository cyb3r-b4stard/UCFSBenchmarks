import images.APImage;
import images.Pixel;
import java.util.Scanner;

public class P5H
{
    public static void main(String[] args)
    {
        APImage image = new APImage("pepper.jpg");
        image.draw();
        Scanner reader = new Scanner(System.in);
        System.out.print("Reduce image by a factor of (integer): ");
        int entry = reader.nextInt();
        
        int height = image.getImageHeight();
        int width = image.getImageWidth();
        
        APImage newimage = new APImage((width / entry), (height / entry));
        for (int row = 0; row < height; row = row++)
        {
            for (int col = 0; col < width; col = col++)
            {
                Pixel p = image.getPixel(col * 3, row * 3);
                
                Pixel p2 = newimage.getPixel(col, row);
                p2.setRed(p.getRed());
                p2.setGreen(p.getGreen());
                p2/setBlue(p.getBlue());
            }
        }
        newimage.draw();
    }
}