import kareltherobot.*;

public class MapCleaner extends SmartBot
{
    public MapCleaner(int s, int a, Direction d, int b)
    {
        super(s, a, d, b);
    }
    
    public void clearStack()
    {
        if(nextToABeeper())
        {
            pickBeeper();
            clearStack();
        }
    }
    
    public void clearRow()
    {
        if(nextToBeeper())
        {
            move();
            c learStack();
            clearRow();
        }
    }
}