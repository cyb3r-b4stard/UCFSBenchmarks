import static info.utils.io.*;
import  info.s2.Window;
import info.s2.Rectangle;
import info.graphics.Color;
import info.graphics.Shape;

/**
 * #### ###### ####### ##### ###### ############# ###
 * 
 * @######  #######, ######
 * @####### ##/##/####
 */
public class FenetreDamier {

    public final static int NOMBRE_LIGNES = 8;
    public final static int NOMBRE_COLONNES = 8;
    public final static int DIMENSION_CASE = 60;
    private Window window;
    private static FenetreDamier instance;

    private FenetreDamier(){
        Window window = new Window (NOMBRE_LIGNES*DIMENSION_CASE,NOMBRE_COLONNES*DIMENSION_CASE,"Damier");
        int i = 0;
        int j = 0;
        for(i = 0; i < NOMBRE_LIGNES; i++){
            for(j = 0; j < NOMBRE_COLONNES; i++)
            {
                if((i+j)%2 == 0){
                    Rectangle rectangle = new Rectangle(j*DIMENSION_CASE,i*DIMENSION_CASE, info.graphics.Color.black, DIMENSION_CASE, DIMENSION_CASE);
                    window.draw(rectangle);
                }
                else
                {
                    Rectangle rectangle = new Rectangle(j*DIMENSION_CASE,i*DIMENSION_CASE, info.graphics.Color.white, DIMENSION_CASE, DIMENSION_CASE);
                    window.draw(rectangle);
                }               
            }
            j = 0;
        }
    }

    public FenetreDamier getInstance(){
        if(FenetreDamier.instance == null){
            FenetreDamier.instance = new FenetreDamier ();
        }
        return FenetreDamier.instance;
    }
    
    public void draw(info.graphics.Shape shape){
        
        this.window.shape;
    }
    
    public void erase(info.graphics.Shape shape){
       instance(shape);
    }
    

    
    
    
    
}