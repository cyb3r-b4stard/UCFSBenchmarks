
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Website extends Media
{
    private String address;
    private String middleName;
    
   public Website()
   {}
   
    public Website(String name)
    {  
        super.setName(name);
    }
    
    public void setAddress(String address)
    {
        if (address.substring(0,10)== "http:
        {  
            if (address.substring(address.lastIndexOf("."))==".com")
            {
                this.address=address;
            }
           
        }  
        else 
        { System.out.println("URL is nor in the specified form!");
   
        }  
        
     }

    public String getOnlyMiddle()
    {
        if(address.substring(0,10)=="http:
        { 
            middleName=address.substring(11,address.lastIndexOf(".")-1);
        } else if (address.substring(0,3)== "www."  && address.substring(address.lastIndexOf("."))==".com") {
            
            middleName=address.substring(4,address.lastIndexOf(".")-1);
        }
     
        return middleName;
    }
    
    public String toString(Website website)
    { if(website.getDescription()!="null")
        {
            return ( "Description:" + website.getDescription()+"/n" );
        }
        
        if (website.getName()!="null")
        {
            return ("Name:"+ website.getName()+"/n");
        }
        if (website.getDate()!="null")
        { 
            return ("Date:"+ website.getDate()+"/n");
        }
        if (address!="null")
        {
        return ("Address:"+ address);
        }

    return "";
}

public boolean equals(Object object) {

        if ( object instanceof Website) {
            Website we = (Website) object;
            
           
       
                return getName().equals(we.getName());
            }
          else {   return false;
        }

       
    }
    
    public int hashCode()
    {
    int hash=0;
    hash= (this.getDescription()).length());
    return hash;
    }
    

}