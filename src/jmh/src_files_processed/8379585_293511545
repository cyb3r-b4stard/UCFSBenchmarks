import java.util.Scanner;
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class milage
{
    /**
     * Constructor for objects of class milage
     */
    public static void main(String[] args)
    {
        Scanner keyboard = new Scanner(System.in);
        double miles_driven;
        double gallons;
        double mileage;
        String error;
        
        
        System.out.println("This program calculates mileage.");
        System.out.println("How many miles did you drive?");
        miles_driven =keyboard.nextDouble();
        System.out.println("How many of gallons of gas did you use?");
        gallons = keyboard.nextDouble();
        if (gallons == 0)
            mileage = String error;
        else
            mileage = miles_driven/gallons;
      
        System.out.println("Mileage is " +mileage);
        
      
    }

    
  
}