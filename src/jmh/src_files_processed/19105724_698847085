import java.util.io.*;
import java.util.Scanner

public class Computeraverage{
    public static void main(String [] args) throws IOException {
        Scanner treader = new Scanner(new File("numbers.txt"));
        double number, sum = 0;
        int counter = 0;
        
        while (reader.hasNext()){
            number = reader.nextDouble();
            sum += number;
            counter++;
        }
        
        if (count == 0)
        System.out.println("The file had no numbers");
        
        else 
        System.out.println("The average of " + counter + " numbers is " + sum / counter);
    }
}