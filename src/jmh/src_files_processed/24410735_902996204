import java.util.*;
class Area
    {
public static void main()
        {Scanner sc = new Scanner(System.in);
System.out.println(" 1) S.A of a cone \n 2) S.A Of a rectangular solid \n 3.Area of a sphere");
System.out.println("Enter your choice");
int ch = sc.nextInt();
switch (ch)
        {case 1 :
            {area(double r,double h,double pi);
break;}
case 2 :
{ area(float l,float w,float hei);
break;}
case 3:
                {area(double ra,double pii);
break;}
            }
        }
public static double area(double r,double h,double pi)
        {
            Scanner sc = new Scanner(System.in);
System.out.println("Enter length and height one after the other");
double r = sc.nextDouble();
double h = sc.nextDouble();
double pi = 22.0/7.0;
double a = pi*(Math.sqrt(r*r +h*h));
System.out.println("Area =" +a);
    }
public static float area(float l,float w,float hei)
    {
        Scanner sc = new Scanner(System.in);
System.out.println("Enter length,width and height respectively");
float l = sc.nextDouble();
float w= sc.nextDouble();
float hei = sc.nextDouble();
float a = 2*(l*w+h*w*h+l*h);
System.out.println("Area = " + a);
    }
public static double area(double ra,double pii)
    {
        Scanner sc = new Scanner(System.in);
System.out.println("Enter radius");
double ra = sc.nextDouble();
double pii = 22.0/7.0;
double a = 4*pii*r*r;
System.out.println("Area" + area);
    }
}