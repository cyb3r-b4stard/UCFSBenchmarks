import java.util.ArrayList;
public class MyPhone2
    {
    private String color;
    private int memoryCapacity;
    private ArrayList< Song >songLibrary = new ArrayList< Song >();
    public MyPhone2()
        {
        color = null;
        memoryCapacity = 0;
        for( int index = 0; index < songLibrary.size(); index++ )
            {
            songLibrary.add( index,null);
            } 
        } 
    public MyPhone2( String initialColor, int initialMemoryCapacity, ArrayList< Song> initialSongLibrary )
        {
        color = initialColor;
        memoryCapacity = initialMemoryCapacity;
        songLibrary = initialSongLibrary;
        } 
    public int totalPlayTime()
        {
        int total = 0;
        /*
        for( int index = 0; index < songLibrary.length; index++ )
        {
        total += songLibrary[ index ].getRunTime();
        } 
        */
        for( Song s: songLibrary )
            {
            total += s.getRunTime();
            } 
        return total;
        } 
    public void deleteAllSongs()
        {
        for( int index = 0; index < songLibrary.size(); index++ )
            {
            songLibrary.remove( index );
            index--;
            } 
    public String toString()
        {
        String message;
        message = "MyPhone" + "\n" +
        "Color: " + color + "\n" +
        "Memory Capacity: " + memoryCapacity + " (GB)" + "\n" +
        "Song Library:" + "\n\n";
        for( int index = 0; index < songLibrary.length; index++ )
            {
            message += songLibrary[ index ] + "\n";
            } 
        return message;
        } 
    } 
