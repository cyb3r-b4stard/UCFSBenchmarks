public class BankAccountTester
{

     public static void main(String[] args)
     {
            BankAccount myChecking = new BankAccount();
            try
            {
                myChecking.deposit(-10);
                myChecking.deposit(500);
                myChecking.withdraw(600);
                myChecking.deposit(-100);
            }
            catch (IllegalArgumentException exception)
            {
                System.pit.println("Error please input valid ammount")
            }

            System.out.println("$"+myChecking.getBalance());
      }
  }
