
/**
 * ############# ## ### ######### ## ### ### ######
 * 
 * @###### (####) 
 * @####### (#.#  ~   #/#/##)
 */
public class Measuredevice
{
    private int value;
    private int minValue;
    private int maxValue;
    private String unit;

    /**
     * input of the first measurement
     */
    public Measuredevice(int newValue, String newUnit)
    {
        minValue = newValue;
        maxValue = newValue;
        value = newValue;
        unit = newUnit
        
        

    }

    /**
     * new measurement
     */
    public void newMeasurement(int newValue)
    {
        value = newValue;
        if(newValue > maxValue)
        {
            maxValue = newValue;
        }

        if(newValue < minValue)
        {
            minValue = newValue; 

        }

    }

    /**
     * print out the current, minimum and maximum value
     */

    public void print()
    {
            System.out.println("the value is " + value + newUnit);
            System.out.println("the maximum value is " + maxValue + newUnit);
            System.out.println("the minimum value is " + minValue + newUnit);
    }

    /**
     * reset everything to zero
     */
    public void reset()
    {
        value = 0;
        minValue = 0;
        maxValue = 0;
    }

}