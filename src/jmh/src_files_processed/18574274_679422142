                    System.out.println ("Veuillez entrer le nom de la compagnie :");
                    nomCompagnie = Clavier.lireString();
                }
                System.out.println ("Veuillez indiquer si le jeu est dans son emballage original (oui ou non) :");
                emballage = Clavier.lireCharLn();
                if (emballage == 'O' || emballage == 'o'){
                    emOriginal = true;
                } else if (emballage == 'N' || emballage == 'n'){
                    emOriginal = false;
