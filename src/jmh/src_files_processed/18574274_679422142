                    System.out.println ("Choix invalide!");
                    menuPlateForme();
                    plateForme = Clavier.lireInt();
                }
                menuDifficulte();
                difficulte = Clavier.lireInt();
                while (difficulte < Jeu.MIN_DIFFICULTE || difficulte > Jeu.MAX_DIFFICULTE){
                    System.out.println ("Choix invalide!");
                    menuDifficulte();
                    difficulte = Clavier.lireInt();
                }
                Jeu jeu = new Jeu(nomJeu, genre, anneeSortie, difficulte, plateForme, nomCompagnie, emOriginal);
                inventaire[compteur] = jeu;
                compteur = compteur + 1;                
            }else if (choixChar == 'I' || choixChar == 'i'){
                System.out.println ("Veuillez saisir le numero du jeu pour lequel vous voulez afficher les informations");
                choixInt = Clavier.lireInt();
                System.out.println (inventaire[choixInt].toString());
            }else if (choixChar == 'L' || choixChar == 'l'){
                menuL();
                choixInt = Clavier.lireInt();
                while (choixInt < 1 || choixInt > 9){
                    System.out.println ("Choix invalide!");
                    menuL();
                    choixInt = Clavier.lireInt();
                }
                switch (choixInt){
                   case 1 :
                        for (int i = 0; i < inventaire.length; i++){
                            System.out.println (inventaire[i]);
                        }
                   break;
                        
