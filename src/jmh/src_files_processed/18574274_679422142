public class Tp3Gr20 {

    public static void intro() {
        System.out.println ("Bienvenue dans la base de donnees de jeux videos. Vous pourrez saisir et afficher l'information relative a vos jeux");
    }

    public static void menuPrincipal() {
        System.out.println ("Veuillez choisir l'une des options du menu suivant en tappant la lettre correspondante (majuscule ou minuscule) :");
        System.out.println ("N : Ajouter un nouveau jeu");
        System.out.println ("I : Afficher les informations d'un jeu");
        System.out.println ("L : Afficher les informations des jeux selon des conditions");
        System.out.println ("T : Afficher le nom et le genre d'un jeu");
        System.out.println ("E : Supprimer un jeu");
        System.out.println ("G : Changer la difficulte d'un jeu");
        System.out.println ("R : Changer le nom d'un jeu");
        System.out.println ("S : Modifier l'annee de sorite d'un jeu");
        System.out.println ("D : Modifier le nom de la compagnie d'un jeu");
        System.out.println ("Q : Quitter");
    }
    
    public static void menuL() {
        System.out.println ("Veuillez choisir l'une des options du menu suivant en tappant le numero correspondant :");
        System.out.println ("1 : Afficher les informations de tous les jeux");
        System.out.println ("2 : Afficher les informations de tous les jeux ayant le genre selectionne");
        System.out.println ("3 : Afficher les inforamtions de tous les jeux etant dans leur boite d'origine");
        System.out.println ("4 : Afficher les jeux avec un classement par genre");
        System.out.println ("5 : Afficher les noms de compagnie ayant un jeu sur la plate-forme selectionne");
        System.out.println ("6 : Afficher les informations de tous les jeux ayant comme date de sortie celle selectionne");
        System.out.println ("7 : Afficher les informations de tous les jeux ayant une partie de la phrase entree dans leur titre");
        System.out.println ("8 : Afficher les informations de tous les jeux ayant comme compagnie celle selectionner");
        System.out.println ("9 : Retourner au menu principal");
    }

    public static void menuGenre() {
        System.out.println ("Veuillez entrer le genre du jeu selon les choix suivant :");
        System.out.println ("0 = Inconnu");
        System.out.println ("1 = Shooter");
        System.out.println ("2 = Course");
        System.out.println ("3 = Arcade");
        System.out.println ("4 = Jeu de role");
        System.out.println ("5 = Action/Aventure");
    }

    public static void menuPlateForme() {
        System.out.println ("Veuillez entrer la plate-forme selon les choix suivant :");
        System.out.println ("0 = Nintendo");
        System.out.println ("1 = Super Nintendo");
        plateForme = Clavier.lireInt();
        while (plateForme < Jeu.MIN_PLATE_FORME || plateForme > Jeu.MAX_PLATE_FORME){
            System.out.println ("Choix invalide!");
            menuPlateForme();
            plateForme = Clavier.lireInt();
        }
    }

    public static void menuDifficulte(){
        System.out.println ("Veuillez entrer le niveau de difficulté du jeu selon les choix suivant :");
        System.out.println ("0 = Facile");
        System.out.println ("1 = Moyen");
        System.out.println ("2 = Difficile");
        System.out.println ("3 = Tres Difficile");
        System.out.println ("4 = Variable");
    }

    public static Jeu [] augmenterTaille (Jeu [] tab0){
        Jeu [] tabTemp = new Jeu [tab0.length + 1];
        for (int i = 0; i < tab0.length; i++){
            tabTemp[i] = tab0[i];
        }
        return tabTemp;
    }    

    public static void main (String[] params) {
