                        menuGenre();
                        genre = Clavier.lireInt();
                        while (genre < Jeu.MIN_GENRES || genre > Jeu.MAX_GENRES){
                            System.out.println ("Choix invalide!");
                            menuGenre();
                            genre = Clavier.lireInt();
                        }
                        int compteur2 = 0
                        for (int i = 0; i < inventaire.length; i++){
                            if (genre == inventaire[i].getGenreInt()){
                                System.out.println (inventaire[i]);
                                compteur2 = compteur2 + 1
                            }
                        } 
                        if (compteur2 == 0){
                            System.out.println ("Aucun jeu n'a ce genre");
                        }
                   break;
                        
                   case 3 :
                        for (int i = 0; i < inventaire.length; i++){
                            if (inventaire[i].getBoiteOriginale){
                                System.out.println (inventaire[i]);
                            }
                        }
                   break;
                   
                   case 4 :
                        for (int i = 0; i < Jeu.GENRES; i++){
                            int compteur3 = 0
                            System.out.println (Jeu.GENRE[i]);
                            for (int j = 0; i < inventaire.length; j++){
                                if (inventaire[i].getGenre == i){
                                    System.out.println (inventaire[i].getNom);
                                    compteur3 = compteur3 + 1;
                                }
                            }
                            if (compteur3 == 0){
                                System.out.println ("Il n'y a pas de jeu de ce genre");
                            }
                        }
                   break;
                   
                   case 5 :
                        menuPlateForm();
                        plateForme = Clavier.lireInt();
                        while (plateForme < Jeu.MIN_PLATE_FORME || plateForme > Jeu.MAX_PLATE_FORME){
                            System.out.println ("Choix invalide!");
                            menuPlateForme();
                            plateForme = Clavier.lireInt();
                        }
                        for (int i = 0; i < inventaire.length; i++){
                            if (plateForme
                        
                    
            }else if (choixChar == 'T' || choixChar == 't'){

            }else if (choixChar == 'E' || choixChar == 'e'){

            }else if (choixChar == 'G' || choixChar == 'g'){

            }else if (choixChar == 'R' || choixChar == 'r'){

            }else if (choixChar == 'S' || choixChar == 's'){

            }else if (choixChar == 'D' || choixChar == 'd'){

            }else if (choixChar == 'Q' || choixChar == 'q'){

            }

        }while (choixChar != 'Q' && choixChar != 'q');

    } 

} 
