import comp102x.IO;

public class Lab02
{
    
    public static void multiply()
    {
        System.out.print("Enter an integer, x: ");
        int x = IO.inputInteger(); 
        System.out.println();
        
        System.out.print("Enter an integer, y: ");
        int y = IO.inputInteger(); 
        System.out.println();
        
        int calculated_result = x*y;
        
        System.out.println("Answer = " + calculated_result);
        
        
        
        
    }
    
    public static void calculateTriangleArea()
    {
        System.out.print("Enter the width of the triangle: ");
        double width = IO.inputDouble();
        System.out.println();
        
        System.out.print("Enter the height of the triangle: ");
        double height = IO.inputDouble();
        System.out.println();        
        
        double calculated_area = width*height/2;
        System.out.println("The triangle area = "+ calculated_area);        
        
        
        
    }
    
    public static void solveQuadraticEquation()
    {
        System.out.print("Enter a: ");
        double a = IO.inputDouble();
        System.out.println();
        
        System.out.print("Enter b: ");
        double b = IO.inputDouble();
        System.out.println();
        
        System.out.print("Enter c: ");
        double c = IO.inputDouble();
        System.out.println();
        
        b = -1*b;
        
        int d = b*b - 4*a*c;
        double e = 2*a;
        
        double first_x = (b + Math.sqrt(d)/(e);
        double second_x = (b - Math.sqrt(d)/(e);
        System.out.println("x1: " + first_x + " in x2: " + second_x);
        
        
        
        
    }
}