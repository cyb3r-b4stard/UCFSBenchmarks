
public class AMPEL
{
  
    public int positionX;     
    public int positionY;
    public String ampelphase;
    public LAMPE lampeOben;
    public LAMPE lampeMitte; 
    public LAMPE lampeUnten;
    
    
    public AMPEL ()
    {
        lampeOben = new LAMPE();
        lampeMitte = new LAMPE ();
        lampeUnten = new LAMPE ();
        positionX = 1;
        positionY = 1;
        ampelphase = "rot";
        
        lampeOben.FarbeSetzen("rot");
        lampeOben.PositionSetzen (1,1);
        lampeMitte.PositionSetzen (1,2);
        lampeUnten.PositionSetzen (1,3);
            
        }
        
        
        public void GruenSchalten()
        {
            lampeUnten.FarbeSetzen("gruen");
            lampeMitte.FarbeSetzen("schwarz");
            lampeOben.FarbeSetzen("schwarz");
        }
        
        public void RotSchalten()
        {
            lampeUnten.FarbeSetzen("schwarz");
            lampeMitte.FarbeSetzen("schwarz");
            lampeOben.FarbeSetzen("rot");
        }
        
        public void GelbSchalten()
        {
            lampeUnten.FarbeSetzen("schwarz");
            lampeMitte.FarbeSetzen("gelb");
            lampeOben.FarbeSetzen("schwarz");
        }
          
        public void GelbrotSchalten()
        {
            lampeUnten.FarbeSetzen("schwarz");
            lampeMitte.FarbeSetzen("gelb");
            lampeOben.FarbeSetzen("rot");
        }
        
        public void ampelposSetzen (int xNeu, int yNeu)
        {
            positionX = xNeu;
            positionY = yNeu;
            
            
            
            lampeUnten.FarbeSetzen = (positionX, positionY);
            lampeMitte.FarbeSetzen = (positionX, positionY+1);
            lampeOben.FarbeSetzen = (positionX, positionY+2);
        }
        
    }
    
    
    
        
    




