import java.util.*;
import java.io.*;

public class BankClient
{
    public static void main ( String [] args ) throws IOException
    {
        String name, name2;
        int acctNo, acctNo2, o;
        double checkBal, checkBal2, savingBal, savingBal2;
        String pass;
        Scanner reader = new Scanner (System.in);
        
        System.out.println("Welcome to Bank. Please create a new customer.");
        System.out.println("Enter a name of the customer");
        name = reader.nextLine();
        System.out.println("Enter the account number");
        acctNo = reader.nextInt();
        System.out.println("Enter the current checking account balance.");
        checkBal = reader.nextDouble();
        System.out.println("Enter the current savings acount balance");
        savingBal = reader.nextDouble();
        
        Bank b1 = new Bank (name, acctNo, checkBal, savingBal);
        Bank b2 = new Bank ("none", 0, 0, 0);
        
        System.out.println("Please choose one of the following options");
        System.out.println("1) Make a savings account deposit");
        System.out.println("2) Make a checking account deposit");
        System.out.println("3) Make a savings account withdraw");
        System.out.println("4) Make a checking account withdraw");
        System.out.println("5) Creat a new customer");
        System.out.println("6) Display customer account information");
        System.out.println("7) Quit and send to file");
        o = reader.nextInt();
        
        while ( o!= 7 )
        {
            switch (o)
            {
                case 1: System.out.println("Enter password");
                        pass = reader.nextLine();
                        pass = reader.nextLine();
                        b1.depositS(pass);
                        break;
                
                case 2: System.out.println("Enter password");
                        pass = reader.nextLine();
                        pass = reader.nextLine();
                        b1.depositC(pass);
                        break;
                
                case 3: System.out.println("Enter password");
                        pass = reader.nextLine();
                        pass = reader.nextLine();
                        b1.withdrawS(pass);
                        break;
                
                case 4: System.out.println("Enter password");
                        pass = reader.nextLine();
                        pass = reader.nextLine();
                        b1.withdrawC(pass);
                        break;
                
                case 5: System.out.println("Enter a name of the customer");
                        name2 = reader.nextLine();
                        name2 = reader.nextLine();
                        System.out.println("Enter the account number");
                        acctNo2 = reader.nextInt();
                        System.out.println("Enter the current checking account balance.");
                        checkBal2 = reader.nextDouble();
                        System.out.println("Enter the current savings acount balance");
                        savingBal2 = reader.nextDouble();
                        b2 = (name2, acctNo2, checkBal2, savingBal2);
                        break;
                
                case 6: System.out.println(b1);
                        break;
                        
            }
            System.out.println("Please choose one of the following options");
            System.out.println("1) Make a savings account deposit");
            System.out.println("2) Make a checking account deposit");
            System.out.println("3) Make a savings account withdraw");
            System.out.println("4) Make a checking account withdraw");
            System.out.println("6) Display customer account information");
            System.out.println("7) Quit and send to file");
            o = reader.nextInt();
        }
        
        b1.toFile();
        b2.toFile();
    }
    
}