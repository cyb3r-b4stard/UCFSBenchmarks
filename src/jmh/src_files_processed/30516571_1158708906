import java.io.*;

public class NewProfile extends Login_ProfileCreator {
    
   String employee_Name;
   String employee_ID;
   String employee_Salary;
   String employee_Department;
   String employee_JobTitle;
   String employee_SecurityAcess;
   String employee_Password;
    
   public void profile(String name, String ID, String Salary, String Department, String JobTitle, String SecurityAcess, String Password) {
      
      employee_Name = name;
      employee_ID = ID;      
      employee_Salary = Salary;
      employee_Department = Department;
      employee_JobTitle  = JobTitle; 
      employee_SecurityAcess = SecurityAcess;
      employee_Password = Password;
      
    }
    
   public void WriteNew() { throw IOException
    
      File f = new File("E:\\Grade 11 Comp Sci\\Sales Cente\\" + employee_Name);
      FileWriter r  = new FileWriter(f);
      BufferedWriter write = new BufferedWriter(r);
      
      try {
          f.createNewFile();
      } catch (IOException e) {
          System.err.println("IOException: " + e.getMessage());
      }
      
      try {
        write.write(employee_Name);
        write.newLine();
        write.write(employee_ID);
        write.newLine();
        write.write(employee_Salary);
        write.newLine();
        write.write(employee_Department);
        write.newLine();
        write.write(employee_JobTitle);
        write.newLine();
        write.write(employee_SecurityAcess);
        write.newLine();
        write.write(employee_Password);
        write.newLine();
        write.write("end");
        r.close();
        write.close();
      } catch (IOException e) {
        System.err.println("IOException: " + e.getMessage());
      }
    }
}