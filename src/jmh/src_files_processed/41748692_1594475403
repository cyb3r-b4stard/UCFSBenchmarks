import java.io.*;
import java.util.*;
public class Paint 
{
    public static int painted1 (int a, int b, int c, int d)
    { 
        int painted = 0;
        if (b > c)
        {
            painted = b;
        }
        else if (c>=b)
        {
            painted =(b-a) +(d-c);
        }

        return (painted);
    }

    public static int sortNumbers (int [] nameArray,int sum)
    {
        for(int i= 0; i < nameArray.length-1; i++)
        {
            for(int j= 0; j < nameArray.length-1; j++)
            {
                if(nameArray[j] > nameArray [j+1])
                {
                    int temp = nameArray [j];
                    nameArray[j] = nameArray [j+1];
                    nameArray[j+1] = temp;
                }
            }
        }
        return temp
    }

    public static void main(String[] args) throws IOException 
    {
        int amountPainted = 0;
        BufferedReader br = new BufferedReader(new FileReader("paint1.in"));
        PrintWriter pw = new PrintWriter(new BufferedWriter(new FileWriter("paint.out")));

        StringTokenizer st = new StringTokenizer(br.readLine());
        int a = Integer.parseInt(st.nextToken());
        int b = Integer.parseInt(st.nextToken());

        st = new StringTokenizer(br.readLine());
        int c = Integer.parseInt(st.nextToken());
        int d = Integer.parseInt(st.nextToken());


        pw.println(painted1(a,b,c,d));

        pw.close();
    }
}