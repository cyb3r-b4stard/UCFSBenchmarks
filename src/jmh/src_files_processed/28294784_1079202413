public class KASTEN
{
	private int links;
	private int oben;
	private int breite, hoehe;
	private ZEICHENFENSTER ZF;
	
	public KASTEN()
	{
		links = 50;
		oben = 100;
		breite = 200;
		hoehe = 40;
	}

	public KASTEN(int l, int o, int b, int h)
	{
		links = l;
		oben = o;
		breite = b;
		hoehe = h;
		ZF = new ZEICHENFENSTER("Automat",400,1000)
	}

	public void zeichne()
	{
		ZF.gibFenster().
			zeichneRechteck( links, oben, breite, hoehe );
	}
	
	public void setzeLinks(int linksNeu)
	{
		links = linksNeu;
	}
	
	public void setzeRechts(int rechts)
	{
		breite = rechts - links;
	}

	public void verschieben(int nachRechts, int nachUnten)
	{
		links = links + nachRechts;
		oben = oben + nachUnten;
	}
}