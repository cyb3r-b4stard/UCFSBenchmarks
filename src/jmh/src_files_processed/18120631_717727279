    public String assignType(int y)
    {
        
        if(y==1)
        {
            
            currencyType=1;
            type="normal";
            assign(type);
            return type;
        }
        else if(y==2)
        {
           
            currencyType=2;
            type="deflation";
            assign(type);
            return type;
        }
        else if(y==3)
        {
         
            currencyType=3;
            type="inflation";
            assign(type);
            
            return type;
            
        }
        else{
            return"";
        }
       
    }
    
    public void assign(String version)
    {
        if(version.equals("deflation"))
        {
            currencyRate=-0.9;
            startingvalue=100;
           
        }
        else if(version.equals("inflation"))
        {
            currencyRate=9.00;
            startingvalue=100;
            
        }
        else if(version.equals("normal"))
        {
            currencyRate=3.00;
            startingvalue=100;
           
            
        }
    }    
    public double getRate()
    {
        return currencyRate;
    }
        
    public void setPopularity(int pop){
        popularity=pop;
    }
