public class ECStar
{
public static void main(String[]args)
{
for(int row=1;row<=10;row++)
{
for(int col=1;col<=row;col++)
{
System.out.print("*");   
}
for(int row=1;row<=10;row++)
{
for(int col=10;col>=row;col--)
{
System.out.print("*");   
}
}
for(int row=1;row<=10;row++)
{
for(int col=10;col>=row;col--)
{
System.out.print(" ");   
}
for(int col=1;col<=row;col++)
{
System.out.print("*");
}
}
for(int row=10;row>=0;row--)
{
for(int col=10;col>=row;col--)
{
System.out.print(" ");
}
for(int col=1;col<=row;col++)
{
System.out.print("*");   
}
}
}
}