import java.util.ArrayList;

public class MediaLib
{
    public ArrayList<Song> songs = new ArrayList<Song>();
    public static void main()
    {
        
        double totalCost = 0.0;
        int numSongs = 0;
        int numBooks = 0;
        int numMovies = 0;
        int totalRatings =0;
        double averageCost = 0;
        double averageRating = 0;
        
        System.out.println("Welcome to your Media Library");
        
        Song song1 = new Song("Something", 4.85, 7);
        numSongs = numSongs + 1;
        totalCost = totalCost + song1.getPrice();
        totalRatings = totalRatings + song1.getRating();
        double totalCost = 0;
        for((Song song : songs) {
            totalCost += song.getCost();
        }
        double averageCost = totalCost/songs.size;
        System.out.println("Average Cost: " + averageCost);
        System.out.println(song1.getTitle());
        
        Book book1 = new Book("Somewhere", 8.92, 9);
        numBooks = numBooks + 1;
        totalCost = totalCost + book1.getPrice();
        totalRatings = totalRatings + book1.getRating();
        System.out.println(book1.getTitle());
        
        Movie movie1 = new Movie("Someone", 12.13, 3);
        numMovies = numMovies + 1;
        totalCost = totalCost + movie1.getPrice();
        totalRatings = totalRatings + movie1.getRating();
        System.out.println(movie1.getTitle());
    }
}