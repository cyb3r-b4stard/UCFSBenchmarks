public class Exercices {

        static public void demandeEtAfficheDate() {
        int jour = input.nextInt();
        String mois = input.next();
        int annee = input.nextInt();
        output.println("Saisissez le jour, le mois et l'année (int, String, int) :");
        output.println("Nous sommes le : " + jour + " " + mois + " " + annee);
        
        
    }
    
    static public void produit() {
        double a;
        int b;
        double p;
        a = input.nextDouble();
        b = input.nextInt();
        output.print("a * b = ");
        p = a * b;
        output.println(p);
    }
    static public void test() {
       output.print( ( 1.0 + 2 + 3 ) / 2 );
    }
        static public void debugTest() {
        int i;
        double d = 1.23;
        String s = "Hello";
        i = random.nextInt(100);
        d = random.nextDouble();
        output.print("Saisissez un mot : ");
        s = input.next();
        output.println(i + " " + d + " " + s);
    }
        static public void derouler() {
        double i = 5.5;
        double j;
        j = i;
        j = 2.0;
        j = i * j;
    }
    static public void erreurs2() {
        String maChaine = "Coucou ";
        maChaine = maChaine + "Geai ";  
        maChaine = maChaine + "Bleu";
        output.println(maChaine);
    }
        static public void erreurs3() { 
        int i1 = 4;
        int i;
        double d1;
        String s1;
        d1 = 2;
        i1 = 4;
        i = random.nextInt();
        d1 = i / i1;
        s1 = "Hello";
    }
        static public void declarations() { 
        int k = 0 ;
        int p;
        String b = "null";
        int r = 12;
        r = k;
        p = r;
        output.println(b);
        double e = input.nextDouble();
        double z = (k + p) * 3.14;
        e = z + e;
    }
        static public void uneMethode() {
        int a = 12;
        int b = 0;
        output.println( b );
    }
     
    static public void uneAutreMethode() {
        double a = 2.5;
        output.println( a );
    }
     
    static public void uneUltimeMethode() {
        String c = "Coucou";
        Exercices.uneMethode();
        Exercices.uneAutreMethode();
        output.println( c );
    }
        public static void squareArea() {
        int area;
        int side;
        output.print("Longueur du côté ? ");
        side = input.nextInt();
        area = side * 2; 
        output.println("L'aire est " + area);
    }
        public static void gaufres() {
        int nbp;         
        double q;
        output.print("Nombre de convives ? ");
        nbp = input.nextInt();
        output.println("Pour " + nbp + " personnes : ");
        q =  2.0 * nbp / 6.0;    
        output.println(q + " oeufs");
        q = 125.0 * nbp / 6.0;
        output.println(q + " g de beurre");
        q =  50.0 * nbp / 6.0;
        output.println(q + " g de sucre");
        q = 250.0 * nbp / 6.0;
        output.println(q + " g de farine");
        q =  75.0 * nbp / 6.0;
        output.println(q + " cl de lait");
        q =   0.5 * nbp / 6.0;
        output.println(q + " paquet(s) de levure");
        output.println("Mélangez les ingrédients en ajoutant le lait petit à petit.");
    }
        public static void moy() {
        int a = random.nextInt(21);
        output.println ("vazi donne un number stp :")
        double b = input.nextInt();
        output.println (a + b);
        output.println ( (a + b) / 2 );  
    }
}
