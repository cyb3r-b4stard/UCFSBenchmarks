import java.util.Scanner;
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class EJEMPLO
{
    public static void main(String[] args) 
    {
        Scanner entrada= new Scanner(System.in);
        int i,j,k; 
        
        int tribuna[][][]=new int [3][2][4];      
       
       
        for(i=0;i<tribuna.length;i++)
        {
            for(j=0;j<tribuna[i].length;j++)
            {
                for(k=0;k<tribuna[i][j].length;k++)
                {
                    System.out.println("Ingrese valores");
                    tribuna[i][j][k]=entrada.nextInt(); 
                }
            }
        }
       
        System.out.println("es 1"+tribuna[0][0][0]);
        System.out.println("es 2"+tribuna[1][][]); 
        System.out.println("es 3"+tribuna[][][3]);

    }
}