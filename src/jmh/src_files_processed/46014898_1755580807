
public class Schweinestall
{
    private int menge;
    Schwein[] meineSchweine = new Schwein[1000];
    Ferkel[] meineFerkel = new Ferkel[400];
    Schwein[] festbraten = new Schwein[6];

    public Schweinestall()
    {
        menge = 0;

        festbraten[0] = new Schwein(1,100);
        festbraten[1] = new Schwein(4,70);
        festbraten[2] = new Schwein(3,88);
        festbraten[3] = new Schwein(1,100);
        festbraten[4] = new Schwein(1,100);
        festbraten[5] = new Schwein(1,100);

        for(int i=0; i<meineSchweine.length; i++){
            meineSchweine[i] = new Schwein(1,100);
        }

        for(int i=0; i<meineFerkel.length; i++){
            meineFerkel[i] = new Ferkel(1,20);
        }
    }

    public double wiegen( int index)
    {
        return festbraten[index].getGewicht();
    }

