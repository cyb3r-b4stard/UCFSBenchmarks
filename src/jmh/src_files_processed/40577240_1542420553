

public class RECHTECK
{
    private int breite;
    private int laenge;
    private int xPosition;
    private int yPosition;

    public RECHTECK()
    {
        breite = 5;
        laeneg = 10;
        xPosition = 2;
        yPosition = 4;
    }
    public void quadratherstellen()
    {
       breite = laenge;
    }   
    public void Verschieben()
    {
        xPosition = 2 + x;
        yPosition = 4 + x;
    }    
    public void strecken()
    {
        breite = 5 * y;
        laenge = 5 * y;
    }
    public void KantenSummeGeben()
    {
        return laenge + breite;
    }
    }    
        

    
    
}