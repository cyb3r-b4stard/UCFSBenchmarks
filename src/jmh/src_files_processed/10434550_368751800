import cha.*;
import cha.action.*;
import java.awt.*;
import javax.swing.*;
import java.util.*;
import static java.awt.Color.*;

public class TheLake 
            extends CHApplet
{
        
    private class BirdFly
                extends CHAction {       
        public void step() {

            }
        }
       

    public void init()
    {        
        Random gen;
        gen = new Random();
        
        Color lightBlue;
        lightBlue = new Color(200, 220, 255);
        Color brown;
        brown = new Color(68, 51, 0);
        setBackground (brown);        

        Boat boat;
        boat = new Boat();
        add(boat);
        boat.setBounds(350, 150, 45, 90);
        boat.setVelocity(3, 0);
                        
        BirdFly bAction;
        bAction = new BirdFly();
        add(bAction);
        bAction.setLimit(30);
        bAction.setText("Fly");
        
        CHButton fly;
        fly = new CHButton();
        add(fly);
        fly.setBounds(25, 450, 50, 20);
        fly.setAction(bAction);
        
        CHLabel label;
        label = new ChLabel();
        add(label);
        label.setBounds(400, 475, 100, 100);
        label.setText("The Lake by Derrick Kauffman")
                        
    }
}