public class CesareanShift
{

    public CesareanShift()
    {

    }

    public static char encryption(char u, int n)
    {
        if (alphabetToNumber(u)+n>26)
            return (char)((alphabetToNumber(u)+n)-26);
        else if(alphabetToNumber(u)+n<=26)
            return(char)(alphabetToNumber(u)+n);
         else
            return null;
    
    public static int alphabetToNumber(char i)
    {
        return (int)i-96;
    }
    
 
    public static void decryption()
    {

    }

}