import java.util.Scanner;

public class Exact_Age{
    public static void main (String [] args){
        
        Scanner age = new Scanner (System.in);
        
        System.out.println("Enter Today's Date");
        int date = age.nextInt();
        
        System.out.println("Enter the Number of the Month");
        int month = age.nextInt();
        
        System.out.println("Enter the Year");
        int year = age.nextInt();
        
        System.out.println("Enter the Date of Your Birth");
        int bDate = age.nextInt();
        
        System.out.println("Enter the Number of the Month of Your Birth");
        int bMonth = age.nextInt();
        
        System.out.println("Enter the Year of Your Birth");
        int bYear = age.nextInt();
        
        if(bMonth > month){
            
            int years = year - bYear - 1;
            System.out.println("You are " + years + " Years Old");
            
        }
        
        else if(bMonth < month){
            
            int years = year - bYear;
            System.out.println("You are " + years + " Years Old");
        }
        
        else{
            
            if(bDate > date){
                
                int months==11;
                int dates = 30 - (bDate - date);
                
                int years = year - bYear - 1;
                System.out.println("You are " + years + " Years, " + months + " months, and " + dates + " Days Old");
            }
            
            else if(bDate < date){
                
                int dates = date - bDate;
                
                int years = year - bYear;
                System.out.println("You are " + years + " Years and " + dates + " Days Old");
            }
            
            else{
                
                int years = year - bYear;
                System.out.println("You are " + years + " Years Old");
            }
            
        }
        
    }
}