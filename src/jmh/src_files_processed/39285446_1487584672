    private int secondNum;
    private int small;
    private int big;
    private int sum;
    private double avg;
    private int oddCount;

    public SumOfOddInts()
    {
        if (firstNum %2 = 0)
        {
            System.out.print("Enter the first odd integer... ");
            firstNum = SavitchIn.readLineInt();
        }
        
        while (secondNum %2 != 0)
        {
            System.out.print("Enter the second odd integer... ");
            secondNum = SavitchIn.readLineInt();
        }
        
        /*
