    }

    public int add()
    {
        int count = small;
        oddCount = small;
        while (big >= count)
        {
            if ( count %2 != 0)
            {
                sum += count;
                oddCount++;
            }
            count++;
        }
        return sum;
    }

    public double getAverage()
    {
        avg = sum / oddCount;
        return avg;
    }

    public int getNumOfInts()
    {return oddCount;}

}








