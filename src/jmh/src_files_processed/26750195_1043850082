 */
public class Malprogramm
{
    Bildschirm derBildschirm;
    Stift meinStift;
    Tastatur dieTastatur;  
    Maus meineMaus;
    Buntstift meinBuntstift;

    public Malprogramm()
    {
        derBildschirm = new Bildschirm();
        meinStift = new Stift();
        dieTastatur = new Tastatur();
        meineMaus = new Maus();
        meinBuntstift = new Buntstift();
    }

    public void MalendurchBewegenDerMaus()
    {   meinBuntstift.bewegeBis(meineMaus.hPosition(),meineMaus.vPosition());
        meinBuntstift.runter();
        do
        {meinBuntstift.bewegeBis(meineMaus.hPosition();meineMaus.vPosition());
        }
        while(! meineMaus.istGedrueckt());
        meinBuntstift.hoch();
    }
    public void PunkteSetzen()
    {
    }
    public void PunkteNurBeiKlickSetzen()
    {
    }
    public void Freihandzeichnen()
    {
    }
    public void FreihandzeichenMitRadieren()
    {
    }
    public void LinienZeichnen()
    {
    }
    public void LinienZeichnenMitFarbwechsel()
    {
    }
    public void LinienZeichnenMitZweifachemFarbwechsel()
    {
    }
    public void LinienZeichnenMitMehrfachemFarbwechsel()
    {
    }
   
}