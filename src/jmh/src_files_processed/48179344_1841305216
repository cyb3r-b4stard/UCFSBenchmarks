import java.io.FileNotFoundException;
import java.util.Scanner;
import java.io.File;

public class Bewaker
{
    private String naam;
    private int rank;
    private double ervaring;
    private int kogels;
    private int energie;
    
    public Bewaker(String naam, int rank, int kogels){
        this.naam = naam;
        if ( rank < 1){
            this.rank = 1;
        }
        else{
            this.rank = rank;
        }
        this.ervaring = 0;
        this.kogels = kogels;
        this. energie = 100;
    }
    public boolean schiet(){
        if( kogels > 0){
            kogels --;
            System.out.println("PANG");
            ervaring += 200;
            return true;
        }
        else {
            return false;
        }
    }
     public boolean loop( int aantalkm){
         energie -= (aantalkm*3);
         if (energie >= 0 ){
             ervaring += (aantalkm * 20);
             return true;
            }
            else {
                energie = 0;
                return false;
            }
        }
    public void rust(){
        energie += 60 ;
        kogels +=25;
        if( energie > 100){
            energie = 100;
        }
       
    }
    public void promotie(){
        int benodigdeErvaring = (rank*1000) + (4000/(rank+1));
        if (ervaring >= benodigdeErvaring) {
            rank++;
            ervaring -= benodigdeErvaring;
        }
    }
    public void automatisch 

}



