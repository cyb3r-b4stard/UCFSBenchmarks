import java.util.Scanner;
public class even
{
     public static void main(String args[])
     {
          Scanner hv= new Scanner(System.in);
          System.out.println("This is a Program to display even numbers upto a limit entered by user \nEnter the limit of the loop");
           int n= hv.nextInt();
           for(int i=0;i>=n;i+2)
           {
             System.out.println("\n"+i)
            
            }
        }
}