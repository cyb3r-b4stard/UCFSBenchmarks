import java.util.*;
public class RabbitJumps
{
    public static void main (String[] args) {
        System.out.print("Enter n: ");
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();   

        System.out.print("Enter rock locations: ");

        int[] array = new int[n+1];
        for (int i=1; i<n+1; i++) { 
            array[0] = 0; 
            array[i] = sc.nextInt();            
        }

        int currentPosition = 0;
        int numberOfLeaps = 0;

        System.out.println("This is to print all the elements in the array");
        for (int p=0;p<n+1;p++) {
            System.out.print(array[p]+", ");
        }

        largestLeap(n, numberOfLeaps,array, currentPosition);

        if (currentPosition == n+1) {  
            System.out.println(numberOfLeaps);
        }

    }

    public static void largestLeap (int n, int numberOfLeaps, int[] array, int currentPosition) {
        int position1, position2 = currentPosition;

        for (int testMove = position2, testCurrent = currentPosition ; array[testMove]- array[testCurrent] <= 50 && position2 < n; testMove++ ){
            position2 = testMove;
        }
        
        
        numberOfLeaps++;

        position1 = position2;     
        currentPosition = position2;

        System.out.println("\n");
        System.out.println("current step is at Array["+ currentPosition +"]");
        System.out.println("\n");
        System.out.println("The largest leap was to rock at location: " + array[currentPosition]);
        
        System.out.println("Current location: " + array[currentPosition]);
        System.out.println("Current position index: " + currentPosition]);
        

    }

     
}
