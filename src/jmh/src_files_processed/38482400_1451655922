import javax.swing.*;

public class PresentacionCeramicas
{
    Ceramicas rCeramicas = new Ceramicas ();

    
    public PresentacionCeramicas ()
    {
       
    }

    public void IngresarDatos ()
    {
       int continuar = JOptionPane.YES_OPTION;
     rCeramicas.setNombre(JOptionPane.showInputDialog(null, "Ingresar Nombre del Comprador"));   
     rCeramicas.setApellido (JOptionPane.showInputDialog(null, "Ingresar Apellido del comprador"));
     rCeramicas.setIdentificacion(Integer.parseInt(JOptionPane.showInputDialog(null, "Ingresar Número de Identificación")));
      
        rCeramicas.setTipoMetros(Integer.parseInt(JOptionPane.showInputDialog(null," Ingrese tipo de  ceramica a comprar  " )));
       rCeramicas.setMetros(Integer.parseInt(JOptionPane.showInputDialog(null," Ingrese el numero de metros cuadrados  " )));
       rCeramicas.setModo(Integer.parseInt(JOptionPane.showInputDialog(null,"Ingrese el modo de pago:1 si es de contado,2 si es con tarjeta o 3 si es con cheque  ") ));
       rCeramicas.descuento1();
        while (continuar == JOptionPane.YES_OPTION)
       {
          rCeramicas.setTipoMetros(Integer.parseInt(JOptionPane.showInputDialog(null, "Ingresar tipo de ceramica: \n1: tipo1, \n2:  tipo 3, \n3: tipo3 , \n4:  tipo4"  )));
          
          if (rCeramicas.calcularDescuento1()== true) {
              
              
              rCemento.calcularCeramicas();
              rCemento.valorCeramicas();
              rCemento.calcularTotalCeramicas();

              rCemento.contarCompras();
          }
          else {
                JOptionPane.showMessageDialog(null, "El valor de la Resistencia no es el adecuado, escoja otra opciÃ³n.", "Error", JOptionPane.ERROR_MESSAGE);
          
                
            
      
          continuar = JOptionPane.showConfirmDialog(null, "Desea continuar ingresando compras?", "Continuar", JOptionPane.YES_NO_OPTION);
        
        }
    }
    
    public void PresentacionDatos ()
    {
        JOptionPane.showMessageDialog (null, "El total a pagar es  "+ rCeramicas.getPagar ());
    }
}