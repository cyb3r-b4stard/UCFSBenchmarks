
public class BubbleSort
{
    public static void main(String args[])
    {
        int[10] liste = {2,5,2,7,9,3,5,0,1,5};
    }

    private static int[] bubbleSort(int[] l)
    {
        int changed = 0;
        for(int i : l.values)
        {
            if(i == l.getLength() - 1 && changed != 0)
                {i = -1; changed = 0; }
            else if(l.values[i] < l.values[i + 1])
            {
                int helf = l.values[i];
                l.values[i] = l.values[i+1];
                l.values[i+1] = helf;
                changed++;
            }
            else if(i == l.getLength() - 1 && changed == 0) break;
            else continue;
        }
        
        return l;
    }
}