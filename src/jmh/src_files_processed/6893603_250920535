public class ArrayUtility
{

    /**
     * Constructor for objects of class ArrayUtility
     */
    private ArrayUtility()
    {
        int x = 0;
    }

    /**
     * print out the contents of an array
     * @param numbers an array to be printed 
     */
    static void printArray(int [] numbers )
    {
        System.out.println ("Array contents: /n{ ");
        for (int i = 0; i < numbers.length -1 ; i++)
        {
            System.out.print(numbers[i] + ", ");
        }
        System.out.println (numbers[numbers.length - 1] + "");
    }

    /**
     * print out the contents of an array
     * @param numbers an array to be printed 
     */
    static void printArray(String [] words )
    {
        System.out.println ("Array contents: /n{ ");
        for (int i = 0; i < words.length -1 ; i++)
        {
            System.out.print(words[i] + ", ");
        }
        System.out.println (words[words.length - 1] + "");
    }

    /**
     * Changes the contents of the array
     * changes each element to be twice the original value
     * @param intArray the array to be modified
     * @return the array now modified
     */
    public static int [] twiceFamiliar(int [] intArray)
    {
        for (int i = 0; i < intArray.length; i ++)
        {
            intArray[i] *= 2;
        }
        return intArray;
    }

    /**
     * does not Change the original contents of the array
     * returns an array with each element twice the value of original contents
     * @param intArray the values to be copied and doubled 
     * @return a new array with each element double the value of the given array
     */
    public static int[] twicePolite(int [] intArray)
    {
        int [] twice = new int [intArray.length];
        for (int i = 0; i < intArray.length; i++)
        {
            twice [i] = intArray [i] *2; 
        }
        return twice; 
    }

    /**
     *sums all the elements in the array
     * 
     * @param  numbers an array of integers
     * @return     the sum of all the values in the array
     */
    public static int getSum(int [] numbers)
    {
        int sum = 0; 
        for (int i=0; i < numbers.length ; i++)
        {
            sum += numbers [i] ; 
        }
        return sum;
    }

    /**
     * calculates the average of the given array
     * @param numbers the array containing the values to be averaged
     * @return the average of all the values in the arrays
     */
    public static double getAverage (int [] numbers)
    {
        return (double) getSum (numbers) / (double) numbers.length; 
    }

    /**
     * 
     */
    public static void getNames (int monthNumber)
    {
        return allNames[monthMaker];
        String[][] allNames = {{"January", "February", "March", "April", "May", "June", "July", 
                "August", "September", "October", "November", "December"};
        {"Ichigatsu", "Nigatsu", "Sangatsu", "Shigatsu", "Gogatsu", "Rokugatsu", "Nanagatsu", 
            "Hachigatsu", "Kugatsu", "Juugatsu", "Juuichigatsu", "Juunigatsu"};
        {"Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre"
            "Octobre", "Noviembre", "Deciembre"};}
            
    }

    public static void main (String [] args)
    {
        int[] testTemperatures = {0,15,82,85,85,82,90};
        String [] daysOfTheWeek = {"Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", 
                "Saturday"};
        printArray (testTemperatures);
        printArray(daysOfTheWeek);
        System.out.println ("The sum is" +  getSum(testTemperatures));
        System.out.println ("The average is" +  getAverage(testTemperatures));
        
        printArray(allNames);

        System.out.println ("TwicePolite: " );
        int [] myArray = twicePolite(testTemperatures);
        printArray(myArray); 
        System.out.println("Original Array"); 
        printArray(testTemperatures);

        System.out.println("TwiceFamiliar: " );
        myArray = twiceFamiliar(testTemperatures); 
        printArray(myArray);
        System.out.println("Original Array");
        printArray(testTemperatures);

    }

}