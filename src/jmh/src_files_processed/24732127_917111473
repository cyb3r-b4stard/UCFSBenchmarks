    int n=0;
    int pid;
    int qty1;
    void salesI()
    {
        boolean flag=false;
        if(cno>0)
        {
            System.out.println("enter your product id");

            while(true)
            {
                try
                {
                    pid=sc.nextInt();
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only integer values");
                    String ss=sc.nextLine();
                    continue;
                }
            }

            for(i=0;i<id.length;i++)
            {
                if(pid==id[i])
                {
                    flag=true;
                    System.out.println("enter the quantity");

                    while(true)
                    {
                        try
                        {
                            qty1=sc.nextInt();
                            break;
                        }
                        catch(Exception e)
                        {
                            System.out.println("Enter only integer values");
                            String ss=sc.nextLine();
                            continue;
                        }
                    }

                    if(qty[i]>=qty1)
                    {
                        qty[i]=qty[i]-qty1;
                        t_pqt[n]=qty1;

                        cust_id[n]=cno;
                        cust_name[n]=name;
                        cust_num[n]=numb;

                        cust_pid[n]=id[i];
                        cust_p_cat[n]=type[i];

                        cust_p_brand[n]=brand[i]; 
                        cust_p_name[n]=instruments[i];

                        cust_p_cost[n]=cost[i]*qty1;                    
                        n++;                       
                    }
                    else
                    {
                        System.out.println("insufficiect quantity");
                    }
                }
            }
            if(flag==false)
            {
                System.out.println("Invalid product id");
            }
        }
    }
    int cid;
    int qty4=0;
    void salesS()
    {
        boolean flag=false;
        if(cno>0)
        {
            System.out.println("enter your product id");

            while(true)
            {
                try
                {
                    cid=sc.nextInt();
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only integer values");
                    String ss=sc.nextLine();
                    continue;
                }
            }

            for(i=0;i<sid.length;i++)
            {
                if(cid==sid[i])
                {
                    flag=true;
                    System.out.println("enter the quantity");

                    while(true)
                    {
                        try
                        {
                            qty4=sc.nextInt();
                            break;
                        }
                        catch(Exception e)
                        {
                            System.out.println("Enter only integer values");
                            String ss=sc.nextLine();
                            continue;
                        }
                    }

                    if(qs[i]>=qty4)
                    {
                        qs[i]=qs[i]-qty4;
                        cust_sqty[n]=qty4;

                        cust_id[n]=cno;
                        cust_name[n]=name;
                        cust_num[n]=numb;

                        cust_sid[n]=sid[i];

                        cust_p_sing[n]=singers[i]; 
                        cust_p_son[n]=songs[i];

                        cust_p_cos[n]=cos[i]*qty4;                    
                        n++;                       
                    }
                    else
                    {
                        System.out.println("insufficiect quantity");
                    }
                }

            }
            if(flag==false)
            {
                System.out.println("Invalid product id");
            }
        }
    }
