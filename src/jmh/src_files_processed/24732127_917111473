    void deletion()
    {
        System.out.println("Enter 1.for deleting an instrument or Enter 2.for deleting a song");
        k=sc.nextInt();
        if(k==1)
        {
            System.out.println("Enter the product id");

            while(true)
            {
                try
                {
                    pid=sc.nextInt();
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only integer values");
                    String ss=sc.nextLine();
                    continue;
                }
            }

            for(i=0;i<10;i++)
            {
                if(pid==id[i])
                {
                    del[i]='y';
                }
            }
        }
        else if(k==2)
        {
            System.out.println("Enter the product id");
            j=sc.nextInt();
            for(i=0;i<10;i++)
            {

                if(j==sid[i])
                {
                    del[i]='y';
                }
            }
        }
    }

