int z=0;
void report()
{
int i;
for(i=0;i<15;i++)
{
sum=sum+cust_p_cost[i];
}
System.out.println("the total income today is "+sum);

for(i=0;i<15;i++)
{
if(del[i]=='y')
{
z++;
}
}
System.out.println("the number of products scraped is "+z);
}

