    void addition()
    {
        int tno=0;
        for(i=0;i<22;i++)
        {
            if(id[i]==0)
            {
                break;
            }
        }

        tno = id[i-1]+1;

        System.out.println("your product id is " + tno);

        id[i]=tno;

        String temp="";

        temp=sc.nextLine();

        System.out.println("Enter 1.for addition of an instrument");
        a=sc.nextInt();

        System.out.println("Enter 2.for addition of a song");
        a=sc.nextInt();
        if(a==1)
        {
            System.out.println("Enter the type of instrument (percussion,string,wind )");
            while(true)
            {
                try
                {
                    type[i]=sc.nextLine();
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only string values");
                    String ss=sc.nextLine();
                    continue;
                }
            }
            len = type[i].length();
            if(len < 9)
            {
                for(z=len;z<9;z++)
                {
                    type[i] = type[i] + " ";
                }
            }

            System.out.println("enter the instrument");
            while(true)
            {
                try
                {
                    instruments[i]=sc.nextLine();
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only integer values");
                    String ss=sc.nextLine();
                    continue;
                }
            }

            String s0;
            System.out.println("enter the product brand");
            while(true)
            {
                try
                {
                    s0=sc.nextLine();
                    brand[i]=s0;
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only string values");
                    String ss=sc.nextLine();
                    continue;
                }
            }

            System.out.println("enter the quantity");
            while(true)
            {
                try
                {
                    qty[i]=sc.nextInt();
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only integer values");
                    String ss=sc.nextLine();
                    continue;
                }
            }

            System.out.println("enter the cost");
            while(true)
            {
                try
                {
                    cost[i]=sc.nextInt();
                    break;
                }
                catch(Exception e)
                {
                    System.out.println("Enter only integer values");
                    String ss=sc.nextLine();
                    continue;
                }
            }

            System.out.println("");
            len=instruments[i].length();
            if(len<14)
            {
                for(int y=len;y<14;y++)
                {

                    instruments[i]=instruments[i]+" ";
                }
            }
            l=brand[i].length();
            if(l<9)
            {
                for(int x=l;x<9;x++)
                {
                    brand[i]=brand[i]+" ";

                }
            }
            System.out.println("");
        }
        else if(a==2)
        {
            System.out.println("Enter the album");

            songs[i]=sc.nextLine();

        }
        len = songs[i].length();
        if(len < 9)
        {
            for(z=len;z<9;z++)
            {
                songs[i] =songs[i] + " ";
            }
        }

        System.out.println("enter the Singers name");
        while(true)
        {
            try
            {
                singers[i]=sc.nextLine();
                break;
            }
            catch(Exception e)
            {
                System.out.println("Enter only integer values");
                String ss=sc.nextLine();
                continue;
            }
        }

        String s0;
        System.out.println("enter the product brand");
        while(true)
        {
            try
            {
                s0=sc.nextLine();
                brand[i]=s0;
                break;
            }
            catch(Exception e)
            {
                System.out.println("Enter only string values");
                String ss=sc.nextLine();
                continue;
            }
        }

        System.out.println("enter the quantity");
        while(true)
        {
            try
            {
                qty[i]=sc.nextInt();
                break;
            }
            catch(Exception e)
            {
                System.out.println("Enter only integer values");
                String ss=sc.nextLine();
                continue;
            }
        }

        System.out.println("enter the cost");
        while(true)
        {
            try
            {
                cost[i]=sc.nextInt();
                break;
            }
            catch(Exception e)
            {
                System.out.println("Enter only integer values");
                String ss=sc.nextLine();
                continue;
            }
        }

        System.out.println("");
        len=instruments[i].length();
        if(len<14)
        {
            for(int y=len;y<14;y++)
            {

                instruments[i]=instruments[i]+" ";
            }
        }
        l=brand[i].length();
        if(l<9)
        {
            for(int x=l;x<9;x++)
            {
                brand[i]=brand[i]+" ";

            }
        }
        System.out.println("");
    }
