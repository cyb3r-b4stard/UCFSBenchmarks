import java.util.*;
public class Pig
{
    public static void main(String[] args)
    {
        System.out.println("The name of the game is pig. You roll a pair of dice as long as you want, unless there is a one, in which case you lose all points for the round, or if there are two 1's, in which case you lose all fo your points.");
        System.out.println("Would you like to play?");
        Scanner manBearPig= new Scanner(System.in);
        String again=manBearPig.next();
        int turn=2,cCount=0,x,y;
        String rollAgain;
        System.out.println("When you wish to roll, press enter. When you want to stop rolling, enter 'no'.");
        while (again.equalsIgnoreCase("yes"))
        {
            int pSum=0, cSum=0;
            while (pSum<100&&cSum<100)
            {
                if (turn%2==0)
                {
                    int pTurn=0;
                    System.out.println("It is your turn. You have "+pSum+" points and the computer has "+cSum+" points.");
                    rollagain=manBearPig.nextLine();
                    while (!rollAgain.equalsIgnoreCase("no"))
                    {
                        x= (int) (Math.random()*6)+1;
                        y= (int) (Math.random()*6)+1;
                        if (x==1&&y==1)
                        {
                            System.out.println("You rolled two 1's and lost all your points. Oh no!");
                            pSum=0;
                            break;
                        }
                        if (x==1||y==1)
                        {
                            System.out.println("You rolled a 1 and lost your turn and its accompanying points. Aww, man!");
                            pTurn=0;
                            break;
                        }
                        System.out.println("You rolled a "+x+" and a "+y+".");
                        pturn+=(x+y);
                        System.out.printlnI"Your new turn total is "+pTurn+". Would you like to roll again?");
                        rollagain=manBearPig.nextLine();
                    }
                    pSum+=pTurn;
                }
                else
                {
                    int cTurn=0;
                    while (cTurn<20)
                    {
                        cCount++;
                        x= (int) (Math.random()*6)+1;
                        y= (int) (Math.random()*6)+1;
                        if (x==1&&y==1)
                        {
                            cSum=0;
                            break;
                        }
                        if (x==1||y==1)
                        {
                            cTurn=0;
                            break;
                        }
                        cTurn+=(x+y);
                    }
                    cSum+=cTurn
                    if (x==1&&y==1)
                    {
                       System.out.println("The computer just lost all their points!");
                    }
                    else
                    {
                        if (x==1||y==1)
                        {
                            System.out.println("The computer just lost their points for this turn.");
                        }
                        else
                        {
                            System.out.println("The computer just rolled "+cCount+" times for "+cTurn+" points.");
                        }
                    }
                }
            }
            if (psum>=100)
            {
                System.out.println("You won! Good job.");
            }
            else
            {
                System.out.println("You lost! Don't be such a pig next time.");
            }
            System.out.println("Would you like to play again?");
            again= manBearPig.next();
        }
    }
}