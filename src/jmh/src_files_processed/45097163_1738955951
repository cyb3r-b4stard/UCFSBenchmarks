import java.util.Scanner;

public class Test
{
    private double buy;
    private double sell;
    

    public void main (String [] param)
    {
        Shares Google = new Shares ("Google", 2000 ,"Green");
        Invest i = new Invest ();
        String Stockname = inputword("Which company would you like to invest in?");
        if (Stockname.equals("Google")){
            System.out.print(Google.getStockname() + Google.getvalue() + Google.getrep());
            buy = inputnumber("How much would you like to invest in Google?");
            sell = inputnumber("How many shares woud you like to sell?");
            System.out.println(Google.stockprofit(int buy, int sell));
        }
        i.setStock();
        i.setbuy();
        i.setsell();
    }
    
    public String inputword (String Question)
    {
        String word;
        Scanner scanner = new scanner(System.in);
        System.out.println(Question);
        word = scanner.nextLine.toUppercase();
        return word;
    }
    
    public int inputnumber (String Question)
    {
        int number;
        Scanner scanner = new scanner(System.in);
        System.out.println(question);
        number = Integer.parseInt(scanner.nextLine);
        return number;
    }
}