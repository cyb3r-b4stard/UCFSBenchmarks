 */
public class longestString
{
    private int x;

    /**
     * Constructor for objects of class longestString
     */
    public longestString()
    {
       inputString();
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void inputString()
    {
        ArrayList<String>StudentName;
        StudentName = new ArrayList<>();
        Scanner inputName = new Scanner(System.in);
        System.out.println("please enter student name");
        String name;
        String answer="";
        boolean cheak = true;
        while (cheak)
        {
           System.out.println("please enter student name");
           name = inputName.nextLine();
           StudentName.add(name);
           System.out.println("do you like to insert another student if no press [n]");
           answer= inputName.nextLine();
           if (answer.equals("n"))
           {
              cheak = false;
               
           }
       
         }
         
         int theMaximumString=0;
         
         for(int index=0 ; index<StudentName.size();index++)
         {
         if (StudentName.get(index).length() >theMaximumString)
         theMaximumString = index;
         System.out.print(StudentName.get(index));
         }
}