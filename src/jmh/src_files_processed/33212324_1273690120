    public void printArray()
    {
        int index, amountOfElements;
        
        amountOfElements = myProducts.length;
        
        for(index = 0; index < amountOfElements; index++)
            
            System.out.println(myProducts[index] + " ");
    }
    
    public void enlargeArray()
    {
        int index, originalAmountOfElements, Enlarged_Array_Size;
        
        originalAmountOfElements = myProducts.length;
        
        Enlarged_Array_Size = originalAmountOfElements + originalAmountOfElements;
        
        for(index = 0; index < originalAmountOfElements; index ++)
            enlargedArray[index] = myProducts[index];
        
    }
        
        

    public boolean doesProductExist(String nm)
    {
        if(product1 != null && nm.equalsIgnoreCase(product1.getName())){
            return true;
        }
        
        if(product2 != null && nm.equalsIgnoreCase(product2.getName())){
            return true;
        }
        
        if(product3 != null && nm.equalsIgnoreCase(product3.getName())){
            return true;
        }
        
        return false;
       
    }
}