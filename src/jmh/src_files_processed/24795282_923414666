public class Choice
{
    private static int percGrade;
    
    private static int lowerValue;
    private static int upperValue;
    private static int i;
    
    private static int val1;
    private static int val2;
    private static int val3;
    private static int val4;
    private static int Total;
    private static int Average;
    private static int Lowest;
    private static int Highest;
    
    private static char returnMenu;
    
    private static int getPercGrade()
    {
        return percGrade;
    }
    
    private static char getReturnMenu()
    {
        return returnMenu;
    }
    
    public static void gradeGen()
    {
        System.out.print('\u000c');
        
        System.out.println("You have selected Grade Conversion");
        System.out.println();
        System.out.println("This option will produce a letter grade when ");
        System.out.println("provided with a percentage grade.");
        System.out.println();
        System.out.println("Please input your percentage grade: ");
        
        percGrade = Genio.getInteger();
        
        if (percGrade < 40)
        {
            System.out.println("Your grade is E");
        }
        else if (percGrade > 39 && percGrade <= 49)
        {
            System.out.println("Your letter grade is D");
        }
        else if (percGrade > 49 && percGrade <= 59)
        {
            System.out.println("Your letter grade is C");
        }
        else if (percGrade > 59 && percGrade <= 69)
        {
            System.out.println("Your letter grade is B");
        }
        else if (percGrade > 69 || percGrade < 101)
        {
            System.out.println("Your letter grade is A");
        }
        else if (percGrade < 0 || percGrade > 100)
        {
            System.out.println("Invalid input");
        }
 
        System.out.println("");
        System.out.println("Press 'm' to return to the menu,");
        System.out.println("or press 'd' to exit");
        
        returnMenu = Genio.getCharacter();
        if (returnMenu == 'm')
        {
            Menu.displayMenu();
        }
    }
    
     public static void mathTable()
    {
        System.out.print('\u000c');
        
        System.out.println("You have selected Mathematical Table");
        System.out.println("");
        System.out.println("This option will take your upper and lower values then ");
        System.out.println("produce a table of the square, cube and square");
        System.out.println("root of said values.");
        System.out.println("");
        
        System.out.println("Please enter your lower value: ");
        lowerValue = Genio.getInteger();
        
        System.out.println("Please enter your upper value: ");
        upperValue = Genio.getInteger();
        
        if(lowerValue < upperValue)
        {
            System.out.println("Value\tSquare\tCube\tSquare Root");
                for(int i = lowerValue; i <= upperValue; i++)
                {
                    System.out.println( i + "\t" + (i*i) + "\t" + i*i*i + "\t" + Math.sqrt(i));
                }
        }
        else
        {
            System.out.println("Lower value must not excede upper value");
        }
        
        System.out.println("");
        System.out.println("Press 'm' to return to the menu,");
        System.out.println("or press 'd' to exit");
        
        returnMenu = Genio.getCharacter();
        if (returnMenu == 'm')
        {
            Menu.displayMenu();
        }
    }
    
     public static void numStats()
    {
        System.out.println("You have selected Number Statistics");
        System.out.println("");
        System.out.println("This option allows you to enter up to 4 numbers, then ");
        System.out.println("see the total sum of these numbers, the average also the ");
        System.out.println("highest and lowest numbers used.");
        System.out.println("");
        System.out.println("Please enter your numbers: ");
        
        val1 = Genio.getInteger();
        val2 = Genio.getInteger();
        val3 = Genio.getInteger();
        val4 = Genio.getInteger();
        
        Total = (val1 + val2+ val3 + val4);
        
        Average = (val1 + val2+ val3 + val4)/4;
        
        System.out.println("Values\tTotal\tAverage\tLowest\tHighest");
        System.out.println((val1 + val2+ val3 + val4)"\t" Total "\t" Average "\t");
    }
    
     public static void choiceExit()
    {
        System.out.print('\u000c');
        
        System.out.println("You have chosen to exit the program. Goodbye!");
        try {
            Thread.sleep(3000);             
        } catch(InterruptedException ex) {
            Thread.currentThread().interrupt();
        }

        System.exit(10);
    }
    
}