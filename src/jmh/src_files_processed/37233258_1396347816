public class Buscost
{
    {
    final double STDRATE=450.75;
    final double HANDICAPRATE=537.95;
    final double HALFBUSRATE=347.25;
    int students=2137;
    int wheelchairs=5;
    int chaperones=students/20;
    int stdcost=((students+chaperones)/66)*(int)STDRATE;
    System.out.println(stdcost);
    int handicapcost=(wheelchairs/4)*(int)HANDICAPRATE;
    System.out.println(handicapcost)
    
    }
}