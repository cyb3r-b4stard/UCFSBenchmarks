    /* Exercice 2
     * a) la première méthode permet de calculer la moyenne de chaque élève en indiquant sur combien 
     * elle est.
     * b) La seconde méthode peut avoir le même nom quela première car elles n'ont pas les mêmes paramètres. Cette relation est appelé surcharge.
     * 
     * c) La 3eme méthode nous indique la moyenne de bart, lisa et homer.
     *      Bart Simpson : 2.5 sur 20
     *      Homer Simpson : 17.5 sur 100
     *      Lisa Simpson : 14.875 sur 15
     */
    static void moyenne(String etudiant, double note1, double note2, int max) {
        double m = (note1 + note2) / 2.0;
        output.println(etudiant + " : " + m + " sur " + max);
    }

    static void moyenne() {
        moyenne("Bart Simpson", 0., 5., 20);
        moyenne("Homer Simpson", 10., 25., 100);
        moyenne("Lisa Simpson", 15., 14.75, 15);
    }

    /* Exercice 2
     * 2) a)Cette méthode affiche le prix d'un article en fonction de son poids en gramme et de son prix au kilo
     * 
     */
    static String etiquette(String article, double prixKilo, double poidsGramme) {
        double res = prixKilo * poidsGramme / 1000;
        return article + " : " + res + " euros";
    }
    static void etiquettes() {
        String truffes;
        String caviar;
        String foieGras;
        truffes = etiquette("Truffes", 250, 750);
        output.println(truffes);
        caviar = etiquette("Caviar", 3500, 50);
        output.println(caviar);
        foieGras = etiquette("Foie Gras", 230, 230);
        output.println(foieGras);
    }
    static void etiquettes2() {
        String etiquette;
        etiquette = etiquette("Truffes", 250, 750);
        output.println(etiquette);
        etiquette = etiquette("Caviar", 3500, 50);
        output.println(etiquette);
        etiquette = etiquette("Foie Gras", 230, 230);
        output.println(etiquette);
    }
    static void etiquettes3() {
        String etiquette;
        output.println(etiquette("Truffes", 250, 750));
        output.println(etiquette("Caviar", 3500, 50));
        output.println(etiquette("Foie Gras", 230, 230));
    }
    static String etiquettes4() {
        String ticket;
        ticket=etiquette("Truffe", 250, 750);
        ticket+="\n"+ etiquette("Caviar", 3500, 50);
        ticket+="\n"+  etiquette("Foie Gras", 230, 230);
        return ticket; 
    }
    /* 1) a,b,c dans testChange sont des variables et d,e,f sont des variables aussi.
     * 2) a,b,c dans change sont des paramètres et d,e,f sont des variables.
     * 3) Dans testChange il n'y a que le nom des paramètres qui changent dans les 3 appels à la méthode change.
     * 4) Cela ne modifie rien dans l'exécution de la méthode change.
     * 5) Cela ne modifie rien dans testChange au retour de cette méthode. 
     */
    static void change(String a, int b, double c) {
        String d = a;
        int e = b;
        double f = c;
        a = "Hello";
        b = b * 2;
        c = 3.14;
        d = "Coucou";
        e = -1;
        f = 0.07;
    }

    static void testChange() {
        String a = "Bonjour";
        int b = 1;
        double c = 0.0;
        String d = a;
        int e = b;
        double f = c;
        change("Bonjour", 1, 0.0);        
        change(a, b, c);
        change(d, e, f);
    }
    static String saisieChaine(String message) {
        String chaine;
        output.print(message);
        chaine=input.next();
        return chaine;
    }
    static int saisieEntier(String message){
        int entier;
        output.print(message);
        entier = input.nextInt();
        return entier;
    }
    static void infos(){
        String demandeNom = "Quel est votre nom ? ";
        String demandeAge = "Quel est votre age ? ";
        String nom;
        int age;
        nom = saisieChaine(demandeNom);
        age = saisieEntier(demandeAge);
        output.print("Vous vous nommez " + nom + " et vous avez " + age + " ans.");
    }
    static void encoreUnDessin(){
        String message;
        String commande;
        String demandeCommande = "Commande ? ";
        String demandeX = "x ? ";
        String demandeY = "y ? ";
        int x;
        int y;
        commande = saisieChaine(demandeCommande);
        x = saisieEntier(demandeX);
        y = saisieEntier(demandeY);
        message = dessine(commande, x, y);
        output.print(message);
    }
    static void createWindow(){
        int largeur;
        int hauteur;
        int x = 640;
        int y = 480;
        Window myWindow;
        myWindow = new Window(x, y, "TP2 : premiers dessins");
        hauteur = myWindow.getHeight();
        largeur = myWindow.getWidth();
        output.println("Largeur : " + largeur);
        output.println("Hauteur : " + hauteur);
        pause(500);
        x = x/2;
        y = y/2;
        myWindow.setSize(x, y);
        output.println("Nouvelles dimensions : " + x + "*" + y);
        modifyWindow(window)
    }
    static void modifyWindow(window){
        int x;
        int y;
        String demandeTitre = "Titre ? (sans espace)";
        String demandeX = "x ? ";
        String demandeY = "y ? ";
        String titreFenetre;
        titreFenetre = saisieChaine(demandeTitre);
        myWindow.setTitle(titreFenetre);
        x = saisieEntier(demandeX);
        y = saisieEntier(demandeY);
        myWindow.setSize(x, y);
    }
}