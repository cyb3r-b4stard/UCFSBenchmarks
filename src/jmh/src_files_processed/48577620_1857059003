
public class Punkt
{
    private int x,y;
    private String name;

    public Punkt(int x, int y)
    {
        this.x = x;
        this.y = y;
    }
    public Punkt(String name, int x,int y)
    {
        this.name = name;
        this.x = x;
        this.y = y;
    }
    public Punkt()
    {
        this.x = 0;
        y = 0;
    }
    public void setname(String name)
    {
        this.name = name;
    }
    public String getname()
    {
            return name;
    }
    public void setx(int x)
    {
        this.x = x;
    }
    
    public int getx()
    {
        return x;
    }
    
    public void sety(int y)
    {
        this.x = x;
    }
    
    public int gety()
    {
        return y;
    }
    
    public void strecken(Punkt z, int k)
    {
        (p1.getx()-z.getx())*k;
    }
    
    public void verschieben(int dx, int dy)
    {
        this.x = this.x + dx;
        
        y += dy;  
    }
    
    public double abstand(Punkt other) {
        
        double dx, dy; 

        dx = this.x - other.getx();
        dy = this.y - other.gety();
        
        return Math.sqrt((dx*dx) + (dy*dy));
    }
    
    public void print() {
        System.out.printf("%s(%d|%d)", name, x, y);
    }
    
    public void show() {
    }
   
}