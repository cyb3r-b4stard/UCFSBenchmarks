 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
import java.awt.*; 
public class Rectangle
   
{
      /**PART 1 - fields (describeobject) */
      private int height;
      private int width;
      
      /**PART 2 - constructors (create object, initialize fields)   */
    public Rectangle()
    {
        width=1;
        height=1;
        
    }
    public Rectangle(int w, int h) 
    {
        width =w;
        height =h;
        
        if(w<=0)
        {
            width=0;
        }
        if(height<=0)
        {
            height=0;
        }
    }
    public Rectangle(int w) 
    {
        width =w;
        height =w;
        
    }
    
    /**PART 3 - modifier methods, acccessor methods   */
    public int getHeight()
    {
     return height;
     
    }
    public int getWidth()
    {
     return width;
     
    }
    public void newHeight(int 15)
    {
        height=h;
    }
    public void newWidth(int 10)
    {
        width=w;
    }
    public int returnArea()
    {
        int a = width * height;
        return  a;
    }
    public int returnPerimeter()
    {
       int p=width+height+width+height;
        return p;
    }
    public boolean isSquare()
    {
       if(width==height)
        return true;
        else
        return false;
    }
    public void conv2Square()
    {
     double w = Math.sqrt(returnArea());
     int s = (int) Math.round(w);
     width=s;
     height=s; 
        
    }
    
    /**PART 4 other methods   */
    
    
}