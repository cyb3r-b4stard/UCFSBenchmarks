 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class MainProgramme
{
     public static void main(MainProgramme[] args)  {
         boolean banking = true;
    StdOut.println("Hello, welcome to Online Banking.");
    while (banking == true){
    StdOut.println("What is your balance?");
    int balance = StdIn.readInt();
    StdOut.println("Would you like to make a withdrawl? If yes, please type the amount you would like to take out below. If you would not like to make an withdrawl, please just enter zero.");
    int withdrawl = StdIn.readInt();
    balance-=withdrawl;
    StdOut.println("Great. So your new balance is $" + balance);
    StdOut.println("Would you like to make a deposit? If yes, please type the amount you would like to deposit below. If you would not like to make an deposit, please just enter zero.");
    int deposit = StdIn.readInt();
    balance+=deposit;
    StdOut.println("Great. Your new balance is $" + balance);
    StdOut.println("Would you like to do anything else?");
    String answer = StdIn.readString();
    if (answer == "no"){
        banking === false;
    }
    else if (answer == "yes"){
        banking === true;
}
}
}
}
