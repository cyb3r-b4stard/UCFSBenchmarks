import BreezySwing.Format;

public class Complex
{
    private double real;
    private double imag;
    public Complex()
    {
        real = 0;
        imag = 1;
    }
    public Complex(int r,int i)
    {
        real = r;
        imag = i;
    }
    public Complex(Complex s)
    {
        real = s.real;
        imag = s.imag;
    }
    public double getReal()
    {
        return real;
    }
    public double getImag()
    {
        return imag;
    }
    public void setReal(double r)
    {
        real = r;
    }
    public void setImag(double i)
    {
        imag = i;
    }
    public Complex add (Complex c2)
    {
        Complex result = new Complex();
        result.real = this.real + c2.real;
        result.imag = this.imag + c2.imag;
        return result;
    }
    public Complex subtract (Complex c2)
    {
        Complex result = new Complex();
        result.real = this.real - c2.real;
        result.imag = this.imag + c2.imag;
        return result;
    }
    public static Complex multiply (Complex c1, Complex c2)
    {
        Complex result = new Complex();
        result.real = c1.real * c2.real - c1.imag * c2.imag;
        result.imag = c1.real * c2.imag + c1.imag * c2.real;
        return result;
    }
    public Complex makeConjugate ()
    {
        Complex result = new Complex();
        result.imag = this.imag * -1;
        return result;
    }
    public static Complex divide (Complex c1, Complex c2)
    {
        Complex result = new Complex();
        double conjugated = Complex.multiply(c1,c2.makeConjugate()).real;
        result.real = (Complex.multiply(c1,c2.makeConjugate())).real / conjugated;
        result.imag = (Complex.multiply(c1,c2.makeConjugate())).imag / conjugated;
        return result;
    }
    public String toString()
    {
        if (this.imag == 0)
        {
            if (this.real == 0)
            {
                return ("0");
            }
            else
            {
                return ("" + this.real);
            }
        }
        else if (this.real == 0)
        {
            return (this.imag + "i");
        }
        else if (this.imag < 0)
        {
            return (this.real + "+" + this.imag + "i");
        }
        else
        {
            return (this.real + "+" + this.imag + "i");
        }
    }
    public static abs(Complex c1)
    {
        Complex result = new Complex;
        result.imag = Math.abs(c1.imag);
        result.real = Math.abs(c1.real);
    }
    public boolean isReal(Complex c1)
    {
        if (c1.imag = 0)
        {
            return true
        }
        else
        {
            return false
        }
    }
}