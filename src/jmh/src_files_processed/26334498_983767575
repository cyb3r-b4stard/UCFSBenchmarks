
public class TenGreenBottles
{
    
    public static void main(String[]args)
    {
        int greenBottles = 10; 
        
        while(greenBottles > 0){
            if(greenBottles == 1){
                System.out.println(+ greenBottles + "green bottles standing on the wall");
            }else{
                System.out.println(+ greenBottles + "green bottles standing on the wall"); 
            }
            System.out.println("And if one green bottle should accidently fall");
            System.out.println("There'll be" greenBottles - 1 "standing on the wall"); 
            greenBottles--; 
        }
        System.out.println("No green bottles standing on the wall"); 
    }
}

       
      
       
       
     
 