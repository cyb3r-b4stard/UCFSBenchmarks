 */
public class Aufgabe5_neu
{
    public static void main ( String [ ] args ) {
        System.out.println ("Bitte geben Sie die zu berechnenden Grad, Minuten und Sekunden ein")
    }
    public static double Bogenmaß ( short grad, short min, short sek ) {
        grad = 34;
        min = 23;
        sek = 55;
        double rad;
        System.out.print ("\n");
        System.out.println ("grad = "+(int)grad+"°"+"  min = "+(int)min+"'"+"  sek = "+sek+"˜");
        min  = min  + (double) sek / 60;
        System.out.print ("\n");
        grad = grad + min / 60;
        System.out.println ("grad = " + grad + "°");
        System.out.print ("\n");
        rad = ((2*Math.PI)/360)*grad;
        System.out.printf ("rad = %2.10f\n", rad);
    }
}