import java.util.* ;
/**
 * #### ######   
 * ####. ##, ####
 */
public class StingsAndScanner
{
    public static void main (String[] args) {
        Scanner keyboard = new Scanner ( System.in ) ;
        System.out.println("Please enter a phrase. "); 
        String inputPhrase = keyboard.nextLine( );
        
        System.out.println ( "You entered the phrase: " + inputPhrase ) ;
        
        String aString = inputPhrase ;
        System.out.println("Your phrase entered in all uppercase is: " + aString.toUpperCase());
        
        System.out.println("Your phrase entered in all lowercase is: " + aString.toLowerCase() );
        
        System.out.println("The number of characters in your phrase is: " + aString.length () );
        
        System.out.println("The first character is: " + aString.charAt(1));
        System.out.println("The second character is: " + aString.charAt(2));
        System.out.println("The third character is : " + aString.charAt(3));
        
        System.out.println("The last character is : " + aString.charAt( aString.length()-1 ));
        System.out.println("The second to last character is : " + aString.charAt (aString.length()-2));
        System.out.println("The the character to the last is : " + aString.charAt (aString.length()-3)); 
        
        System.out.println("Please enter a letter to find in your phrase: ");
        int
        inputLetter = keyboard.nexLine ()
        System.out.println("The first occurance of the letter " + inputLetter + "occurs at index" + aString.indexOf());
        System.out.println("The last occurance of the letter " + inputLetter + "occures at index" + aString.lastIndexOf());
        
        
     
    } 
}
