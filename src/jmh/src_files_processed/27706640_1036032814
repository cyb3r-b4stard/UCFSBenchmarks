    Hilfe.kurzePause();
    if(kabbrechen.wurdeGedrueckt()){
        fenster.gibFrei();
    }
    
    if(optional.istGewaehlt()) {
        textO.setzeSichtbar(true);  
    }else{
       textO.setzeSichtbar(false);  
    }
    
    
    if(kbuchen.wurdeGedrueckt()){
