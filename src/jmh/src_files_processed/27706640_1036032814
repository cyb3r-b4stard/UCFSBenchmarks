     this.AirlineCP();   
     System.out.println("Gebucht auf / Booked on:   Cathay Pacific / Flight CX376:"); 
     
    }
    
    if(kzurueck2LH.wurdeGedrueckt()){
        this.Fenster3();
    }
    
    if(kzurueck2DT.wurdeGedrueckt()){
        this.Fenster3();
    }
    
    if(kzurueck2CP.wurdeGedrueckt()){
        this.Fenster3();
    }
    
    if(businessLH.wurdeGedrueckt()){
        this.FensterSLHB();
    }
    
    if(businessDT.wurdeGedrueckt()){
        this.FensterSDTB();
    }
    
    if(businessCP.wurdeGedrueckt()){
        this.FensterSCPB();
    }
    
    if(kzurueck3LH.wurdeGedrueckt()){
        this.AirlineLH();
    }
    if(kzurueck3DT.wurdeGedrueckt()){
        this.AirlineDT();
    }
    if(kzurueck3CP.wurdeGedrueckt()){
       this.AirlineCP();
    }
    }
}

