            System.out.println("=====================================================================================================================================================");
            System.out.println("=====================================================================================================================================================");
            System.out.println("                                Enter the Location of houses to be displayed [WHITEFIELD, MARATHAHALLI OR SARJAPUR(case sensitive)]");
            System.out.println("=====================================================================================================================================================");
            BufferedReader br = new BufferedReader( new InputStreamReader(System.in));
            String location_choice = br.readLine();
            switch(location_choice)
            {
                case "WHITEFIELD" : System.out.println("                            Houses in Whitefield :");
                                    System.out.println(" ");
