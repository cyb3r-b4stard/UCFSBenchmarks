                                      System.out.println("                            " +homes[0]);
                                      System.out.println("");
                                      System.out.println("                            " +homes[1]);
                break;
                case "SARJAPUR" : System.out.println("                            Houses in Sarjapur :");
                                  System.out.println(" ");
                                  System.out.println("                            " +homes[5]);
                                  System.out.println("");
                                  System.out.println("                            " +homes[6]);
                                  System.out.println("");
                                  System.out.println("                            " +homes[8]);
                                  System.out.println("");
                                  System.out.println("                            " +homes[9]);
                break;
                default: System.out.println("");
                          System.out.println("                       - Sorry, Uncommon Floor does not have any houses in this location -");
            }
            {
               System.out.println("");
               System.out.println("Press  1 to go to the home page and 2 to exit");
