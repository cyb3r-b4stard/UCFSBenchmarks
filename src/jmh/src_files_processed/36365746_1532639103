    public static void costHouse() throws IOException
    {
        BufferedReader br = new BufferedReader( new InputStreamReader(System.in));
        String homes[] = { "Rohan Ashima ", "Purva Fountain Square ", "Adarsh Palm Meadows ", "Shobha Rose ", "Chaitanya Armadale ", "Springfields ", "Shubh Enclave ", "Prestige Shantiniketan ", "Rainbow Drive ", "Mantri Flora "};
        String location[] = { "Marathahalli ", "Marathahalli ", "Whitefield ", "Whitefield ", "Whitefield ", "Sarjapur ", "Sarjapur ", "Whitefield ", "Sarjapur ", "Sarjapur"};
        String phonenumber[] = { " 9980031272", " 9845494175", "9873264218", " 9760394231", " 9542741037", " 98323612635" , " 9988032725", " 9686732568", " 9611229285", " 9645312921"};
        String villapartment[] = { "Villa ","Apartment " , "Villa ","Apartment ", "Villa ","Apartment ", "Villa ", "Apartment ","Villa ", "Apartment "}; 
        int cost[] = { 35000000, 15000000, 47500000, 20000000, 30000000, 12500000, 50000000, 25000000, 35000000, 15000000};
        int bhk[] = { 4, 2, 3, 2, 3, 3, 5, 4, 5,2 };
        {
            System.out.println("=====================================================================================================================================================");
            System.out.println("                                                       | |> U N C O M M O N   F L O O R <| |                    ");
            System.out.println(" ");
            System.out.println("                                                      H O U S I N G   I N   B A N G A L O R E                      ");
            System.out.println("=====================================================================================================================================================");
            System.out.println("=====================================================================================================================================================");
            System.out.println("                                                            PLEASE ENTER YOUR BUDGET");
            System.out.println("=====================================================================================================================================================");
            String b;
            int i;
            int budget;
            b = br.readLine();
            budget = Integer.parseInt(b);
            System.out.println("*****************************************************The houses available at this price are: *******************************************************");
            System.out.println("");
            for(i=0;i<=9; i++)
           {
               if(cost[i]<=budget)
                System.out.println("                                                  " + homes[i] + " : " + "Rs. " + cost[i]);
           }
           if( budget<15000000)
           System.out.println("Sorry, We do not have any houses within your budget");
        }
        System.out.println("=====================================================================================================================================================");
        System.out.println(" ");
        System.out.println("===================================================Thank You For Choosing Uncommon Floor.============================================================");
        System.out.println(" ");
        System.out.println("=====================================================================================================================================================");
        System.out.println("");
        System.out.println("");
        System.out.println("Press  1 to go to the home page and 2 to exit");
        int choice;
        String ch = br.readLine();
        choice = Integer.parseInt(ch);
        if(choice==1)
        main();
        else
        System.exit(0);
        
    }
    public static void bhkHouse()throws IOException
    {
        BufferedReader br = new BufferedReader( new InputStreamReader(System.in));
        String homes[] = { "Rohan Ashima ", "Purva Fountain Square ", "Adarsh Palm Meadows ", "Shobha Rose ", "Chaitanya Armadale ", "Springfields ", "Shubh Enclave ", "Prestige Shantiniketan ", "Rainbow Drive ", "Mantri Flora "};
        String location[] = { "Marathahalli ", "Marathahalli ", "Whitefield ", "Whitefield ", "Whitefield ", "Sarjapur ", "Sarjapur ", "Whitefield ", "Sarjapur ", "Sarjapur"};
        String phonenumber[] = { " 9980031272", " 9845494175", "9873264218", " 9760394231", " 9542741037", " 98323612635" , " 9988032725", " 9686732568", " 9611229285", " 9645312921"};
        String villapartment[] = { "Villa ","Apartment " , "Villa ","Apartment ", "Villa ","Apartment ", "Villa ", "Apartment ","Villa ", "Apartment "}; 
        int cost[] = { 35000000, 15000000, 47500000, 20000000, 30000000, 12500000, 50000000, 25000000, 35000000, 15000000};
        int bhk[] = { 4, 2, 3, 2, 3, 3, 5, 4, 5,2 };
        {
            
            System.out.println("=====================================================================================================================================================");
            System.out.println("                                                       | |> U N C O M M O N   F L O O R <| |                    ");
            System.out.println(" ");
            System.out.println("                                                      H O U S I N G   I N   B A N G A L O R E                      ");
            System.out.println("=====================================================================================================================================================");
            System.out.println("=====================================================================================================================================================");
            System.out.println("                                                   PLEASE ENTER YOUR PREFERRED NUMBER OF BEDROOMS");
            System.out.println("=====================================================================================================================================================");
            String b;
            int i;
            int bedroom;
            b = br.readLine();
            bedroom = Integer.parseInt(b);
            System.out.println("***************************************************************The houses available : *******************************************************");
            System.out.println("");
            for(i=0;i<=9; i++)
           {
               if(bhk[i] == bedroom)
                System.out.println("                                                  "+ homes[i] + " : " + bhk[i] + " bedrooms");
           }
           if( bedroom < 2 || bedroom >5)
           System.out.println("Sorry, We do not have any houses with the number of bedrooms you prefer");
        }
        System.out.println("=====================================================================================================================================================");
        System.out.println(" ");
        System.out.println("===================================================Thank You For Choosing Uncommon Floor.============================================================");
        System.out.println(" ");
        System.out.println("=====================================================================================================================================================");
        System.out.println("");
        System.out.println("");
        System.out.println("Press  1 to go to the home page and 2 to exit");
        int choice;
        String ch = br.readLine();
        choice = Integer.parseInt(ch);
        if(choice==1)
        main();
        else
        System.exit(0);
    }
