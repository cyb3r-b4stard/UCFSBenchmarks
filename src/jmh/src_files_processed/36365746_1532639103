                switch (choice)
                {
                    case 1: printForm();
                    break;
                    case 2: showHouse();
                    break;
                    case 3: typeOfhouse();
                    break;
                    case 4: locationHouse();
                    break;
                    case 6: costHouse();
                    break;
                    case 5: bhkHouse();
                    break;
                    case 7: exit();
                    break;
                    default: System.out.println(" Invalid Entry, Please choose one of the options. ");
                }
            }
     }
                
    public static void printForm()throws IOException
    {
            System.out.println("=====================================================================================================================================================");
            System.out.println("                                                       | |> U N C O M M O N   F L O O R <| |                    ");
            System.out.println(" ");
            System.out.println("                                                      H O U S I N G   I N   B A N G A L O R E                      ");
            System.out.println("=====================================================================================================================================================");
            System.out.println("");
            System.out.println(" Please Fill in the Form below, in Order to Sell a House.");
            System.out.println("");
            System.out.println(" Name Of the House (Example: Adarsh Palm Meadows)");
            BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
            String house = br.readLine();
            System.out.println("");
            System.out.println("Enter The Locality ( Example: Whitefield)");
            String locality = br.readLine();
            System.out.println("");
            System.out.println("Enter the type of house(Villa or Apartment)");
            String villapartment = br.readLine();
            System.out.println("");
            System.out.println("Enter The Price at which the house should be sold");
            String p = br.readLine();
            int price = Integer.parseInt(p);
            System.out.println("");
            System.out.println("Please Provide a Phone number");
            String pn = br.readLine();
           
            System.out.println("=====================================================================================================================================================");
            System.out.println(" ");
            System.out.println("===================================================Thank You For Choosing Uncommon Floor. Your House is now For Sale.================================");
            System.out.println(" ");
            System.out.println("=====================================================================================================================================================");
            {
               System.out.println("Press  1 to go to the home page and 2 to exit");
               int choice;
               String ch = br.readLine();
               choice = Integer.parseInt(ch);
               if(choice==1)
               main();
               else
               System.exit(0);
            }
    }
