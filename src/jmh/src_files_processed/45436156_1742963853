import java.util.Scanner;
public class program15a {
    public static void main (String[]args){
        String theRightPassword="Volkswagen";
        String userEnteredPassword="";
        System.out.println("Enter the password.");
        Scanner scnr= new Scanner (System.in);
        userEnteredPassword=scnr.nextLine;
        if(userEnteredPassword.equals(theRightPassword));
        {
            System.out.println("Password correct. Access granted.");
        }
        else 
        {
            System.out.println("Password incorrect. Access denied.");
        }
        