public class NestedLoop
{
    public static void main (String[] args){
    int totalwidth = 9;
    for (int row = 9; row <= totalWidth; row++) {
            for (int col = 9; col <= totalWidth; col++) {
                if (col <= totalWidth - row) {
                    System.out.print(" enter the stars in row of 9");
                     }else {
                           System.out.print("*");
                        }
                    }
                     System.out.println();
                    }
                    