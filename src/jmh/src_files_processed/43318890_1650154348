import java.awt.Rectangle;
import java.util.Scanner;

public class RectangleFun {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("This program will tell you if two rectangles intersect");
        System.out.println("Enter the coordinates of the 1st rectangle");
        
        System.out.print("x: "("\n"));
        int x=sc.nextInt();
        
        System.out.print("y: "("\n"));
        int y=sc.nextInt();
        
        System.out.print("width: "( "\n"));
        int width=sc.nextInt(); 
        
        System.out.print("Height: "( "\n"));
        int height=sc.nextInt();
        Rectangle r1=new Rectangle (x,y,width,height);
        
        System.out.println("Enter the coordinates of the 2nd rectangle");
        x=sc.nextInt();
        System.out.println("X: " +x);

        System.out.println("y: " +y);
        width=sc.nextInt();
        System.out.println("width " +width);
        height=sc.nextInt();
        System.out.println("height " +height);
        Rectangle r2=new Rectangle (x,y,width,height);
        System.out.println("do the rectangles intersect? ");
        
        Rectangle r3=r1.intersection(r2);
        
        System.out.println("and the rectangle where they intersect has coordinates: ");
        System.out.println("x: " +r3.x);
        System.out.println("y: " +r3.y);
        System.out.println("width: " +r3.width);
        System.out.println("height: " +r3.height);
        
        
        
        
        
    }
}