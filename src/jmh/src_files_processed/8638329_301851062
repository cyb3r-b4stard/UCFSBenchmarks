public class Auto
{
private double aktuelleGeschw;
private double hoechstGeschw;
private double schrittweise;

public void hoechsteGeschw()
{
    hoechstGeschw=170.0;
    schrittweise=10.0;
}

public Auto(double hoechstGeschw, double schrittweise)
{
    this.hoechstGeschw=hoechstGeschw;
    this.schrittweise=schrittweise;
}

public void setHoechstgeschw(int hoechstGeschw)
{
    this.hoechstGeschw=hoechstGeschw;
}
public void anfahren()
{   double beschleunigen = 5.0;
    if(aktuelleGeschw == 0.0)
    {
        aktuelleGeschw = beschleunigen;
    }
    else
    {
        System.out.println("Fehler");
    }
}
public void beschleunigen()
{
    double hilfsvar = aktuelleGeschw + schrittweise;
    if(aktuelleGeschw > 0 && hilfsvar <= hoechstGeschw)
    {
       aktuelleGeschw = aktuelleGeschw + schrittweise;
    }
}
public void bremsen()
{
    double hilfsvar = aktuelleGeschw - schrittweise;
    if(hilfsvar <= 0)
    {
       aktuelleGeschw = 0;
    }
    else
    {
        aktuelleGeschw -schrittweise;
    }
}
}