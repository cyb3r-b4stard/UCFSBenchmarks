
public class AMPEL 
extends SPIEL
{
    private RECHTECK kasten;
    private KREIS lampe1;
    private KREIS lampe2;
    
    public AMPEL()
    {super();
     super.tickerStoppen();
     this.kasten= new RECHTECK (100,200);
     this.kasten.setzeFarbe("grau");
     this.kasten.setzeMittelpunkt(400,300);
     
     this.lampe1= new KREIS (40);
     this.lampe1.setzeFarbe("rot"); 
     this.lampe1.setzeMittelpunkt(400,250);
     
     this.lampe2= new KREIS (40);
     this.lampe2.setzeFarbe("gruen");     
     this.lampe2.setzeMittelpunkt(400,350);
    }
    
    public void rot()
    {
     
     this.lampe1.setzeFarbe("rot");
     this.lampe2.setzeFarbe("schwarz");
     
    }
    
    
     public void gruen()
    {
     
     this.lampe1.setzeFarbe("schwarz"); 
     this.lampe2.setzeFarbe("gruen");   
     
    }
    
    public void an()
    {
     
    
     this.lampe1.setzeFarbe("rot");
     this.lampe2.setzeFarbe("gruen"); 
    
        
    }
     public void aus()
    {
     
    
     this.lampe1.setzeFarbe("schwarz");
     this.lampe2.setzeFarbe("schwarz"); 
    
        
    }
    @Override
    public void tasteReagieren(int tastenkuerzel)
    {
      if(tastenkuerzel == 17  )
      {
       this.rot();
      }
      else(tastenkuerzel == 6 );
      {
       this.gruen 
      }
    }
    
}