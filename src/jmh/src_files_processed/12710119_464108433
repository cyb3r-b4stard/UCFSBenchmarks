import java.util.*;
class Ex6
{   public static void main (String args[])
    {   int cont, var;
        float not, ap=0, porc;
        Scanner leogato=new Scanner (System.in);
        System.out.println("Quantas notas entarão no sistema?");
        var=leogato.nextInt();
        for (cont=1; cont<=var; cont++)
        {   
            
            System.out.println("Digite a nota do aluno "+cont+"/"+var+":");
            try
             {
             not=leogato.nextFloat();
             }
             catch (NumberFormatException e)
             {   System.out.println("Valor digitado inválido!");
             }
             if (not>=6)
              ap++;
              }
            
        }
        porc=((ap*100)/var);
        System.out.println(porc+"% de alunos aprovados(nota maior ou igual a 6)");
    }
}
            
