import java.util.*;
public class User_Shape
{
    public static void main(String[]args)
    {
        Scanner stdIn=new Scanner(System.in);
        System.out.println("Welcome to the shape average finder!");
        System.out.println();
        String choice="y";
        while (!choice.equalsIgnoreCase("n"))
        {
            System.out.println("Please enter a shape selection (1 for circle, 2 for square, 3 for triangle, and 4 for ractangle): ");
            String shapeSelection=stdIn.nextLine();
            public static String isDigit()
            {
            switch (shapeSelection.charAt(0))
            {
                case '1':
                System.out.println("We will now calculate the area of a circle");
                System.out.println("Please enter the radius of the circle: ");
                String circleRadius=stdIn.nextLine();
                if (!circleRadius.isDigit())
                {
                   double circleRad=Integer.parseInt(circleRadius);
                   double circleArea=Math.pow(circleRad, 2)*Math.PI;
                   System.out.println("The area of the circle is: "+circleArea);
                }
                else
                {
                   System.out.println("Invalid Entry, please enter a number for the radius: ");
                   circleRadius=stdIn.nextDouble();
                }
                break;
                case '2':
                System.out.println("We will now calculate the area of a square");
                System.out.println("Please enter the length of the square's side: ");
                char squareSide=stdIn.nextLine();
                if (squareSide.isDigit())
                {
                    double squareS=Integer.parseInt(squareSide);
                    double squareArea=Math.pow(squareSide, 2);
                    System.out.println("The area of the square is: "+squareArea);
                }
                else
                {
                    System.out.println("Invalid Entry, please enter a number for the side length: ");
                    squareSide=stdIn.nextdouble();
                }
}
}
}
}
}