
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Person
{

    private String name;

    /**
     * Constructor for objects of class Person
     */
    public Person(String name)
    {
            this.name = name;
    }

    /**
     * Display the person's name
     * 
     */
    public void display()
    {
            System.out.println("This person's name is " + name;
    }
}