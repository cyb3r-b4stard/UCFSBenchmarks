
/**
 * ##### ######
 * 
 * @###### ###### ######## ######## 
 * @####### ##/##/####
 */
public class Switch
{
    public static final boolean ON = true;
    public static final boolean OFF = false;
    
    private boolean switchState;

    /**
     * Constructor for objects of class Switch
     */
    public Switch()
    {
        switchState = false;
    }

    /**
     * Método que devuelve el valor del atributo switch State
     * 
     * @return Valor booleano del atributo switchState
     */
    public boolean getSwitchState()
    {
        return this.switchState;
    }
    
    /**
     * Método que cambia el valor del atributo switchState
     */
    public void press()
    {
        if ( this.switchState == ON )
        {
            this.switchState = OFF;
        }
        
        if ( this.switchState == OFF )
        {
            this.switchState = ON;
        }
    }
    
    /**
     * Método que devuelve ON (true) u OFF (false) según el valor de switchState
     */
    public void toString()
    {
        if ( this.switchState == ON )
        {
            return "ON";
        }
        else
        {
            reutrn "OFF";
        }
    }
}