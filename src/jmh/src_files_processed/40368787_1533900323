import java.util.Scanner;
import java.lang.String;
/**
 * 
 * @###### #####
 * @####### #.#
 */
public class DVD
{
   
    private String DVDTitle;
    private String DirectorName;
    private String NameOfActor;
    private int RunTime;
    
    
public DVD() 
    
    {
    
        
    
    RunTime = 0 ; 
    
    
     }

    public void ShowDVD()
    {
        System.out.println("The title of the DVD is : " + DVDTitle );
      
    }
    
    public void ShowDirector()
    {
        System.out.println("The title of the director is : " + DirectorName );
      
    }
    
    public void ShowActor()
    {
        System.out.println("The title of the lead Actor/Actress is : " + NameOfActor );
      
    }
    
    public void ShowRuntime()
    {
        System.out.println("The runtime of the  DVD is : " + RunTime );
      
    }
    
    public void SetTitle()
    {
        System.out.println("Please enter the name of your DVD : ");
        
        Scanner nameofdvd = new Scanner (System.in);
        
        DVDTitle = nameofdvd.nextLine();
        
    }
    
    public void SetDirector()
    {
        System.out.println("Please enter the name of the Director : ");
        
        Scanner director = new Scanner (System.in);
        
        DirectorName = director.nextLine();
        
    }
    
    public void SetActor()
    {
        System.out.println("Please enter the name of the Actor : ");
        
        Scanner nameofactor = new Scanner (System.in);
        
        DVDTitle = nameofactor.nextLine();
        
    }
    
    public void SetRunTime(0,)
    {
        System.out.println("Please enter the run time of the DVD : ");
        
        Scanner runtime = new Scanner (System.in);
        
        RunTime = runtime.nextInt();
        
    }
    
}