import javax.swing.*;
public class Media3{
    public static void main(String []args){
        double nota1=0,nota2=0,trabalho=0,media=0;
        int c=0;
        String nome="";
        do
        c=c+1;
         while (c<3){
        nome=JOptionPane.showInputDialog("Digite o nome do aluno");
        nota1=Double.parseDouble(JOptionPane.showInputDialog("Digite a nota da 1a avaliação"));
        nota2=Double.parseDouble(JOptionPane.showInputDialog("Digite a nota da 2a avaliação"));
        trabalho=Double.parseDouble(JOptionPane.showInputDialog("Digite a nota do trabalho"));
        media=(nota1+nota2+trabalho)/3;
        if (media>=7)
        JOptionPane.showMessageDialog(null, "O aluno"+nome+"Media"+media+"Aprovado");
        else if(media<=5)
        JOptionPane.showMessageDialog(null, "O aluno"+nome+"Media"+media+"Reprovado");
        else 
        JOptionPane.showMessageDialog(null, "O aluno"+nome+"Media"+media+"Recuperação");
    }
}
}