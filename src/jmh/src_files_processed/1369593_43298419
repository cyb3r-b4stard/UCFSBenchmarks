    public void BUY()
    
        {
            
            Scanner in=new Scanner(System.in);
            System.out.println('\u000c');
            String items[]={"Chrome lining","LED Lights","Alloy Wheels","Roof Scoops","Teflon Coating","Anti-Rust Coating","Door Visor"};
            int amt[]={1000,1500,5000,3500,1900,2000,1500};
            String acc[]=new String[50];
            int at[]=new int[50];
            int j=0,c=0;
            double sum=0;
            double vat=(0.10*cost);
            double ins=(0.15*cost);
            double rto=(0.16*cost);
            System.out.println("Would you like to purchase accessories?");
            String k7=in.nextLine();
            if (k7.equalsIgnoreCase("yes"))
            {
             System.out.println("Enter you choice of accessories");
             System.out.println("0.Chrome Lining    : Rs.1000 ");         
             System.out.println("1.LED Lights       : Rs.1500 ");
             System.out.println("2.Alloy Wheels     : Rs.5000 ");
             System.out.println("3.Roof Scoops      : Rs.3500 ");
             System.out.println("4.Teflon Coating   : Rs.1900 ");
             System.out.println("5.Anti-Rust Coating: Rs.2000 ");
             System.out.println("6.Door Visor       : Rs.1500 ");
             System.out.println("7.If satisfied");
             int ch=in.nextInt();
             while(ch!=7)
             {
              if(ch==0)
              {
                  acc[j]=items[0];
                  at[j]=amt[0];
                  sum=sum+amt[0];
              }
              else if(ch==1)
              {
                  acc[j]=items[1];
                  at[j]=amt[1];
                  sum=sum+amt[1];
              }
              else if(ch==2)
              {
                  acc[j]=items[2];
                  at[j]=amt[2];
                  sum=sum+amt[2];
              }
              else if(ch==3)
              {
                  acc[j]=items[3];
                  at[j]=amt[3];
                  sum=sum+amt[3];
              }
              else if(ch==4)
              {
                  acc[j]=items[4];
                  at[j]=amt[4];
                  sum=sum+amt[4];
              }
              else if(ch==5)
              {
                  acc[j]=items[5];
                  at[j]=amt[5];
                  sum=sum+amt[5];
              }
              else if(ch==6)
              {
                  acc[j]=items[6];
                  at[j]=amt[6];
                  sum=sum+amt[6];
              }
              j++;
              c++;
              ch=in.nextInt();
            }
        }
        if (k7.equalsIgnoreCase("no"))
        {
        System.out.println("Thank You for your response!!");
        }
        double total=(cost+vat+ins+rto+sum);
        System.out.println("Customer's name");
        String k10=in.next();
        System.out.println("Customer's address");
        String k11=in.next();
        System.out.println('\u000c');
        System.out.println("******************************INVOICE******************************");
        System.out.println("");
        System.out.println("");
        System.out.println("Customer's name = "+k10);
        System.out.println("Customer's address = "+k11);
        System.out.println("Car"+"                     "+"Price");
        System.out.println(""+name+":"+cost);
        for(j=0;j<c;j++)
        {
        System.out.println(""+acc[j]+"             :"+at[j]);
        }
        System.out.println("VAT                   :"+vat);
        System.out.println("INSURANCE             :"+ins);
        System.out.println("RTO                   :"+rto);
        System.out.println("Total Amount Payable  :"+total);
        System.out.println("Do you want the car to be delivered or you would like to drive home");
        String k6=in.next();
        if (k6.equalsIgnoreCase("delivered"))
        System.out.println("");
        System.out.println("Do you want to Continue");
        String k8=in.next();
        if (k8.equalsIgnoreCase("yes"))
      
        else
        {
        Exit();
    }
    }

    public void Exit()
    {
        System.out.println("********************THANK-YOU FOR VISITING RENAULT SHOWROOM********************");
    }
