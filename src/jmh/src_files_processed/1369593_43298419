 import java.util.*;
public class car_
   {
    static String name="";
    static double cost=0;
    public void renault()
    {
        Scanner in=new Scanner(System.in);
        System.out.println('\u000c');
        System.out.println("**********WELCOME TO RENAULT SHOWROOM**********");
        System.out.println("Please select the number for the car you would like to see");
        System.out.println("1.Renault Koleos");
        System.out.println("2.Renault Duster");
        System.out.println("3.Renault Fluence");
        System.out.println("4.Renault Pulse");
        System.out.println("5.Renault Scala");
        System.out.println("Press 0 to Exit");
       int r1=in.nextInt();
       if (r1==1)
        Koleos();
       if (r1==2)
        Duster();
       if(r1==3) 
        Fluence();
       if (r1==4)
       Pulse();
       /*if (r1==5)
       Scala();*/
       if (r1==0)
       Exit();
    }
    
    public void Koleos()
    {
        name="Renault Koleos 4x4 M9R855";
        cost=2399000;
        Scanner in1=new Scanner(System.in);
        System.out.println('\u000c');
        System.out.println("You have chosen Renault Koleos ");
        System.out.println("The price of this car(off road) is Rs.23.99 lakhs");
        System.out.println("Enter your choice");
        System.out.println("1.Car body");
        System.out.println("2.Performance");
        System.out.println("3.Buy this car");
        System.out.println("4.To re-select the car");
        int r4=in1.nextInt();
        if (r4==1)
        car();
        else if (r4==2)
        per();
        else if (r4==3)
        BUY();
        else if (r4==4)
        renault();
        else
        System.out.println("Invalid input");
        Koleos();
       }

    public void car()
    
       {
                    Scanner in2=new Scanner(System.in);
        System.out.println("    EXTERNAL FEATURES:-");
        System.out.println("       Curb weight = 3,610-3,930lbs");
        System.out.println("       No. of seats = 5 seaters");
        System.out.println("       Minimum ground clearence = 139cm");
        System.out.println("       Wheel base = 2690mm");
        System.out.println("       Body Style = 4 Doored");
        System.out.println("       Dimensions: length x width x height = 4520 x 1855 x 1705");
        System.out.println("       Suspensions = Spring Base(Back),Telescopic(Front)");
        System.out.println("    ELECTRICAL:-");
        System.out.println("       Key start & remote start");
        System.out.println("       Headlights - Fog Headlights");
        System.out.println("       Lock System = Auto Lock,Manual Lock");
        System.out.println("Would you like to get more information about the car..");
        String k2=in2.nextLine();
        if (k2.equalsIgnoreCase("yes"))
        Koleos();
        else
        BUY();
        }

    public void per()
    
        {
            Scanner in3=new Scanner(System.in);
        System.out.println("    ENGINE:-");
        System.out.println("       Engine = 2.5L I4 16V");
        System.out.println("       Displacement(cc) = 1995cc");
        System.out.println("       Mileage = 13.5km/l");
        System.out.println("       Cylinder Arrangement = *******");
        System.out.println("       Engine type = Air cooled");
        System.out.println("       Max. Power = 150PS @ 4000rpm");
        System.out.println("       Max. Torque = 320Nm @ 2000rpm");
        System.out.println("       Fuel Type = Diesel,38 Lts");
        System.out.println("       Transmission = 6-speed manual & 6-automatic CVI");
        System.out.println("The price of this car(off road) is Rs.23.99 lakhs");
        System.out.println("Would you like to buy the car");
        System.out.println("(To see the information of the car again type 'info')");
        String k3=in3.nextLine();
        if (k3.equalsIgnoreCase("yes"))
        BUY();
        else if (k3.equalsIgnoreCase("info"))
        Koleos();
        else
        renault();
    }

  public void Duster()

