public class Test{
    public static void main(String[] args){
        Scanner s = new Scanner(System.in);
        int number;
        System.out.print("Enter a number: ");
        number = Integer.parseInt(s.nextLine());
        
        number = number*2
        
        System.out.println(number);
        
    }
}