
public class Wasserturm
{
    protected int maxVolumen;
    protected int minVolumen;
    protected int hoehe;
    protected String standort;
    protected int breite;
    protected int tiefe;
    protected int volumen;
    protected int pumpleistung;
   
    public Wasserturm () {
        maxVolumen = 30000;
        minVolumen = 0;
        hoehe = 100;
        standort = "Erkelenz";
        breite = 30;
        tiefe = 20;
        volumen = 20000;
        pumpleistung = 25;
       
         
}
    public Wasserturm ( int pHoehe, int pBreite, int pVolumen, int pPumpleistung ) {
        hoehe = pHoehe;
        breite = pBreite;
        volumen = pVolumen;
        pumpleistung = pPumpleistung;
}
    public int wasserAuffuellen ( int pVolumen, int pPumpleistung ) {
        lVolumen = pVolumen + Volumen
        if ( lVolumen <= maxVolumen)
        {  volumen = lVolumen;
            return 0;
        }
        else
        { volumen = maxVolumen;
            return lVolumen-maxVolumen;
        }