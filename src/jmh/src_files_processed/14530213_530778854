import java.awt.*;
import javax.swing.*;
import java.awt.geom.*;

public class GrafikPanel extends JPanel
{   
    private final int INK = 10;

    private final double ZOOM_PLUS = 1.1;

    private DatenLeser leser = new DatenLeser();
    private Werkzeug werkzeug = new Werkzeug("Hammer");
    private Form[] form;
    private Path2D figur = new Path2D.Double();

    public GrafikPanel()
    {
        setBackground(Color.CYAN);
        werkzeug = leser.getDaten("Hammer");
        form = werkzeug.getFormen();
    }

    public void paint(Graphics g)
    {
        Graphics2D g2 = (Graphics2D)g;
        super.paint(g2);
        for(int i = 0; i < form.length;i++)
        {
            form[i].getFigur()
        }
    }

}