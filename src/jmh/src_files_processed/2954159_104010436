import java.util.ArrayList;
/**
 * ####### # ######### ## ###### ################### ####.
 * 
 * @###### (##### #######) 
 * @####### (###### ## ###### ## ####)
 */
public class ListaDeVeterinarios{

    private ArrayList<Veterinario> lista;
    private ArrayList<Convenio> listaConvenio;

    public ListaDeVeterinarios(){
        lista = new ArrayList<Veterinario>();
        listaConvenio = new ArrayList<Convenio>();
    }
    
    public boolean cadastra(Veterinario vet, String nome){
        if(consultaVeterinario(nome)!=null) return false;
        return lista.add(vet);
    }  
    
    public boolean cadastraConvenio(String nome, Convenio convenio){
        if(consultaVeterinario(nome)==null && ) return false
    }

    public Veterinario consultaVeterinario(String nome){
        for(Veterinario aux: lista){
            if(aux.getNome().equalsIgnoreCase(nome)) return aux;
        }
        return null;
    }
    
    public Convenio consultaConvenio(String codigo){
        for(Convenio aux: listaConvenio){
            if(aux.getCodigo().equalsIgnoreCase(codigo)) return aux;
        }
        return null;
    }
    
    public boolean excluiVeterinario(String nome){
        for(Veterinario aux: lista){
            if(aux.getNome().equalsIgnoreCase(nome)) return lista.remove(aux);
        }
        return false;
    }
}