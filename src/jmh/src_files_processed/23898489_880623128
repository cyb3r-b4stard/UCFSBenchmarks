import java.util.Random;
import java.util.ArrayList;
import java.util.Scanner;

/**
 * ##### ############# ######!
 */
public class StoryCreator
{
    private InputReader reader;
    private OutputWriter writer;
    private Random random;

    public StoryCreator()
    {
        reader = new InputReader();
        writer = new OutputWriter();
        random = new Random();
    }

    public void createAdjectiveStory(String storyFilename, String adjectivesFilename, String outputFilename)
    {
        ArrayList<String> story = reader.getWordsInFile(storyFilename);
        ArrayList<String> adjectives = reader.getWordsInFile(adjectivesFilename);
        ArrayList<String> newStory = new ArrayList<String>();
        boolean wantToQuit = false;

        for(String word : story){
            if(word.startsWith("ADJEKTIV")){
                int randomAdjective = random.nextInt(adjectives.size());
                String adjective = word.replace("ADJEKTIV", adjectives.get(randomAdjective));
                newStory.add(adjective);
            } else {
                newStory.add(word);
            }
        }

        writer.write(newStory, outputFilename);
    }

