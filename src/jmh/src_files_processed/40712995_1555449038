public class DiceGame
{
    private int maximumNumber;
    private int maximumTries;
    private int score;
    private boolean endGame;
    private InputReader dataReader;
    
    public DiceGame()
    {
        MaximumNumber = 6;
        MaximumTries = 0;
        Score = 0;
        EndGame = false;
        dataReader(System.in);
    }
    
    public int rolDice()
    {
         Random randomSequence = new Random();
         return randomSequence.nextInt(maximumNumber) + 1;
    }
    
    public void showPlay()
    {
        System.out.println("           JOGO DE DADOS              ");
        System.out.println("Valor máximo         :" + maximumNumber);
        System.out.println("Nº de tentativas     :" + maximumTries);
        System.out.println("Score                :" + score);
    }
    
    public int inputMaximumNumber(int maximumNumber)
    {
        if (maximumNumber < 1)
        {
            System.out.println("Erro tem de pôr mais tentativas");
            this.maximumNumber = maximumNumber;
        }else 
        {
            this.maximumNumber=maximumNumber;
        }
    }
    
    public void play(int maximumNumber)
    {
        maximumTries = 0;
        score = 0;
        System.out.println("Qual é o número máximo de permitido?");
        maximumNumber = maximumNumber;
        showPlay();
    }
    
    public void play(String name)
    {
        if (name == jogar)
        {
            play();
        }
        else (name == sair)
        {
            endGame = true;
        }
    }
    
    
}
}