import basis.*;

public class Top10 implements KnopfLauscher
{
    private Knopf pl;
    private Knopf su;
    private Knopf le;
    private TextFeld t;
    private Fenster f;
    private Knopf be;
    private TextFeld ti;
    private TextFeld da;
    
    public Top10()
    {
        f = new Fenster();
        t = new TextFeld(50,100,50,20);
        pl = new Knopf(" + ",110,100,100,20);
        pl.setzeKnopfLauscher(this);
        su = new Knopf("Suche",220,100,100,20);
        su.setzeKnopfLauscher(this);
        le = new Knopf("leer",330,100,100,20);
        le.setzeKnopfLauscher(this);
        be = new Knopf("berechne Dauer",10,130,200,20);
        be.setzeKnopfLauscher(this);
        new BeschriftungsFeld("Nr.",10,100,30,20);
        new BeschriftungsFeld("Musik",100,10,100,20);
        new BeschriftungsFeld("Titel:",10,40,50,20);
        ti = new TextFeld(70,40,100,20);
        new BeschriftungsFeld("Dauer:",10,70,50,20);
        da = new TextFeld(70,70,100,20);
    }
    
    public void bearbeiteKnopfDruck(Knopf ereignis)
    {
        if(ereignis == pl){
            int pl=addSong(Song():pSong,int n);
      }
      
      if(ereignis == su) {
          int su = searchSong();
      }
      
      if(eriegnis == le) {  
          int le = emptyFields();
      }
      
      if(ereignis == be) {
          int be = berechneGesamtLaenge();
      }
    }
}