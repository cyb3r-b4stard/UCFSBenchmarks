        return this.descuento;
    }
    
    public int getDiasTranscurridos(){
        return this.diasTranscurridos;
    }
    
     public String getFechaEmicion(){
        return this.fechaEmicion;
    }
    
    public InfoAlumno getInfoAlumno(){
        return this.InfoAlumno;
    }
    
