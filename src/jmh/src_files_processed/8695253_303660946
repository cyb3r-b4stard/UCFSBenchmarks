        this.descuento = this.descuento;
    }
    
     public void setDiasTranscurridos(int diasTranscurridos)
      {
        this.diasTranscurridos = this.diasTranscurridos;
    }
    
     public void setFechaEmicion(String fechaEmicion)
      {
        this.fechaEmicion = this.fechaEmicion;
    }
   
 
    public boolean isActiva(){
       if(activa)
        {
            return "activa";
        }else
        {
            return "no activa";
        }
    }
    
    public int getCodigo(){
        return this.codigo;
    }
    
