import java.util.*;

public class Admit1 {
   public static void main(String[] args) {
      giveInfo();
      Scanner console = new Scanner(System.in);
      double app1 = getInfo(console);
      double app2 = getInfo(console);
      reportResults(app1, app2);
      } 
      
      
         
   public static void giveInfo() {
        System.out.println("This program compares two applicants to");
        System.out.println("determine which one seems like the stronger");
        System.out.println("applicant.  For each candidate I will need");
        System.out.println("either SAT or ACT scores plus a weighted GPA.");
        System.out.println();
    }    
    
   public static double getInfo(Scanner console) {
        System.out.print("do you have 1) SAT scores or 2) ACT scores?");
        int number = console.nextInt();
        if (number == 1) {
            double examScore1 = getSat();
            double gpa = getGPA();
            double overall1 = Math.round1(examScore1 + gpa);
            return overall1;
        }
        else if (number == 2)
        {
            double examScore2 = getAct();
            double gpa = getGPA();
            getOVerall();
            double overall2 = Math.round1(examScore2 + gpa);
            return overall2;
        }
    }
           
           
   public static int getSat(Scanner console) {      
            System.out.print("SAT math?");
            int math = console. nextInt();
            System.out.print("SAT critical reading?");
            int reading = console. nextInt();
            System.out.print("SAT writing?");
            int writing = console. nextInt();
            double examScore1 = (2 * math + reading + writing) / 32;
            System.out.println("exam score = " + Math.round(examScore1 * 10.0) / 10.0);*/
            return examScore1;
        }
            

        public static double getAct(Scanner console) {
            System.out.print("ACT English?");
            int English = console. nextInt();
            System.out.print("ACT math?");
            int math = console. nextInt();
            System.out.print("ACT reading?");
            int reading = console. nextInt();
            System.out.print("ACT science?");
            int science = console. nextInt();
            double examScore2 = (English + 2 * math + reading + science) / 1.8;
            System.out.println("exam score = " + Math.round(examScore2 * 10.0) / 10.0);*/
            return examScore2;
        }
            
   public static double getGpa(Scanner console) {
            System.out.print("overall GPA?");
            double actual_gpa = console. nextDouble();
            System.out.print("max GPA?");
            double max_gpa = console. nextDouble();
            System.out.print("Transcript Multiplier?");
            double transcript_multiplier = console. nextDouble();
            double gpaScore = (actual_gpa / max_gpa) * 100 * transcript_multiplier;
            System.out.println("GPA score = " + Math.round(gpaScore2 * 10.0) / 10.0);
            return gpaScore;

        }
   
        
        public static void reportResults(double app1, double app2) {
        System.out.println("First applicant overall score  = " +app1); 
        System.out.println("Second applicant overall score  = " +app2); 
        
        if(app1>app2){
            System.out.println("The first applicant seems to be better")}
        else if (app1<app2){
            System.out.println("The second applicant seems to be better")}
        
    }
    
    public static double round1(double n) {
        return Math.round(n * 10.0) / 10.0;
    }
}