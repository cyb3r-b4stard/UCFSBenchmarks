import java.awt.event.MouseListener;
import java.awt.event.MouseEvent;
import java.awt.event.*;
import javax.swing.SwingUtilities;


public class Mouse implements MouseListener {

    public int x, y;
    public int buttonID;
    public boolean down;
    public boolean dragged;
    public boolean inGame;
    public int wheelPos;

    private int i;
    private boolean[ ] id = new boolean [24];
    public static boolean left, right, middle;

    public Mouse() {
        x=0;
        y=0;
        buttonID=0;
        down=false;
        dragged=false;
        inGame=false;
        wheelPos=0;
    }

    public void update(){
        left = SwingUtilities.isLeftMouseButton(mousePressed e);
        
        for (int i = 0; i < id.length; i++) {
            if (id[i]) {
                System.out.println("id: " +i);
            }
        }
    }

    public void mousePressed(MouseEvent e) {
        /*x = e.getX();   
        y = e.getY();
        buttonID = e.getModifiers();
        
        down=true;
        dragged=false; 

        left = SwingUtilities.isLeftMouseButton(e);
        right = SwingUtilities.isRightMouseButton(e);
        middle = SwingUtilities.isMiddleMouseButton(e);
        
        id[e.getModifiers()] = true;
    }

    public void mouseReleased(MouseEvent e) {
        /*x = e.getX();   
        y = e.getY();
        buttonID = e.getModifiers();
        down=false;
        dragged=false; */
        id[e.getModifiers()] = false;
    }

    public void mouseEntered(MouseEvent e) {
        inGame=true;
    }   

    public void mouseExited(MouseEvent e) {
        inGame=false;
    }

    public void mouseClicked(MouseEvent e) {

    }
}