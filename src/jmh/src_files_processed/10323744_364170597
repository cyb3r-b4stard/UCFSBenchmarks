
/**
 * ###### ############## ## #### ########
 * 
 * @###### ### #####
 * @#### #/##/####
 */
public class Account
{
    private int acctNumber; 
    private int balance; 
    private String customerName;
    private int interestRate; 

    /**
     * Constructor for creating an Account object with
     * default values for the fields.
     */
    public Account() {
        balance = 0;
        acctNumber = 0;
    }
    
    /**
     * Constructor for objects of class Account
     * @param initAcctNumber the new account number
     */
    public Account(int initAcctNumber)
    {
        acctNumber = initAcctNumber;
        balance = 0;
    }

    public Account (int initAcctNumber, int initBalance, String initName, int initRate)
    { 
        acctNumber = initAcctNumber;
        balance = initBalance;
        customerName = initName;
        interestRate = initRate;
    }
        
    /**
     * set the account number
     * @param acct the new account number
     */
    public void setAccountNumber(int acct)
    {
        acctNumber = acct;
    }
    
    /**
     * get the account number
     * @return the account number
     */
    public int getAccountNumber() {
        return acctNumber;
    }
    
    /**
     *  deposit money into the account
     *  @param depAmount the amount to deposit
     */
    public void deposit(int depAmount) {
        balance = balance + depAmount;
    }
    
    /** 
     * withdraw money from the account
     * @param withAmount the amount to withdraw
     */
    public void withdraw(int withAmount) {
         balance = balance - withAmount;
    } 
  
    /** 
     * adds interest to the total
     * @param total balance will have interest added to it
     */
    public void addInterest(int balance) {
         balance * interestRate / 100 = balance;
    } 
    
    /** 
     * check the account balance (an accessor method)
     * @return the account balance
     */
    public int getBalance() {
        return balance;
    }
    
     /** 
     * check the amount of dollars (an accessor method)
     * @return the dollars in the account
     */
    public int getDollars() {
        return balance / 100;
    }
    
     /** 
     * check the account balance (an accessor method)
     * @return the account balance
     */
    public int getInterest() {
        return interestRate;
    }
    
    /**
     * display the account number and balance on the screen
     */
    public void print() {
 
        System.out.println("Account number: " + acctNumber);
        System.out.println("Balance is: " + balance + " cents.");
    }
    
}