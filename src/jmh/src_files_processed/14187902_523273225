
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class AMPEL
{
    int positionX;
    int positionY;
    String ampelphase;
    LAMPE lampeOben;
    LAMPE lampeMitte;
    LAMPE lampeUnten;    
 AMPEL ()

{   
    positionX = 1;
    positionY = 1;
    ampelphase =  "rot";
    lampeOben = new LAMPE();
    lampeOben.PositonSetzen(1, 1);
    lampeOben.FarbeSetzen("rot");
    lampeMitte = new LAMPE();
    lampeMitte.PositonSetzen(, positionY);
    lampeMitte.FarbeSetzen("schwarz");
    lampeUnten = new LAMPE();
    lampeUnten.PositonSetzen(positionX, positionY);
    lampeUnten.FarbeSetzen("schwarz");
    
    
 
    
}
void GruenSetzen(){
    ampelphase = "gruen";
    lampeOben.SchwarzSetzen;
    lampeMitte.SchwarzSetzen;
    lampeUnten.GruenSetzen;
    
}
void GelbSetzen(){
    ampelphase = "gelb";
    lampeOben.SchwarzSetzen;
    lampeMitte.GruenSetzen;
    lampeUnten.SchwarzSetzen;
}
void RotgelbSetzen(){
    ampelphase = "rotgelb";
    lampeOben.RotSetzen;
    lampeMitte.GelbSetzen;
    lampeUnten.SchwarzSetzen;
}void Weiterschalten(){
if (ampelphase == "rot")
{RotgelbSetzen()

}
else
{
if (ampelphase == "rotgelb")
{ GruenSetzen();
}
else
{
if (ampelphase == "gruen")
{GelbSetzen()
}
else
{
if (ampelphase == "gelb")
{RotSetzen()
}
}}}}}

