import java.util.*;
class lab__14
{
    Scanner sc=new Scanner(System.in);
    int m;
    int n;
    int a[][];
    void accept()
    {
        System.out.println("enter the no of rows and column");
        m=sc.nextInt();
        n=sc.nextInt();
        if((m<2 || m>20))
        {
            if((n<2 || n>20))          
            System.out.println("invalid input");
        }
        System.out.println("enter the elements");
        
        a=new int[m][n];
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<m;j++)
            {                
                a[i][j]=sc.nextInt();
            }
        }
    }
    void display()
    {
            for(int i=0;i<m;i++) 
            {
                System.out.println(" ");
                for(int j=0;j<n;j++)
                {
                   System.out.print(a[i][j]+"\t");
                }
            }
        }
        void maximum()
        {
            int rp=0,cp=0;
            int max=a[0][0];
             for(int i=0;i<m;i++)
             {
                 for(int j=0;j<m;j++)
                 {
                     if(max<a[i][j])
                     {
                         max=a[i][j];
                          rp=i;
                          cp=j;
                        }
                    }
                }
                
                System.out.println("the maximum element is "+max+ " at position"+"("+rp+","+cp+")");
        }
        void minimum()
        { 
            int e=0;
            int d=0
            int min=a[0][0];
            for(int i=0;i<m;i++)
            {
                for(int j=0;j<n;j++)
                {
                    if(min>a[i][j])
                    {
                        e=i;
                        d=j;
                        min=a[i][j];
                    }
                }
            }
            System.out.println("the minimum element is"+min+"at position"+e+","+d+")");
        }
    }
            
        }

                