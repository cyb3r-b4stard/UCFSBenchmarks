
public class BookAPP
{
 Scanner in =new Scanner (System.in);
 Scanner in2=new Scanner(System.in);
 
 System.out.println("Number of book : ");
 int size=in.nextInt();
 Book[] book=new Book[size];
 
    
    for(int i=0; i<book.length;i++)
    {book[i]=new Book();
        System.out.println("\nEnter book code : ");
        String bookCode=in2.nextLine();
        System.out.println("\nBook Title : ");
        String title=in2.nextLine();
        System.out.println("\nBook Price : ");
        double price =in.nextDouble();
        System.out.println("\nBook Price : ");
        String author=in2.nextLine();
        
        book[i].setBookCode(bookCode);
        book[i].setTitle(title);
        book[i].setPrice(price);
        book[i].setAuthor(author);
        
    }
    
    double totalPrice=calculateTotalPrice(book);
    System.out.println("Total price for all books : RM "+totalPrice);
    


  public static double calculateTotalPrice(book[] book)
  { double totalPrice=0.00;
      for(int i=0;i<book.length;i++)
      {totalPrice+=book[i].getPrice();}
      return totalPrice;
  }
}
 