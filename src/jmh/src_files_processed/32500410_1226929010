import java.util.*;
import ou.*;
/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Payroll
{
   private TreeSet<Employee>employeeSet;
  

   /**
    * Constructor for objects of class Payroll
    */
   public Payroll()
   {
     employeeSet = new TreeSet<Employee>();
     
   }

  /**
   * ii
   */
  public void  enrollEmployee(String empNum) 
  {
   Employee employee = new Employee(empNum);
   employeeSet.add(employee);
  }
  
  /**
   * iii
   */
  public void printEmployees()
  {
     for ( Employee eachEmployee : employeeSet)
     {
        System.out.println(eachEmployee.getFullRecord());
      }
  }
  
  /**
   * B i
   */
  
  public void updateSalesFigures(Map<String, Integer>aMap)
  
  
  {  
     Set<String> mapKeys = aMap.keySet();
     for(Employee eachEmployee : employeeSet)
     {
     for(String keys:mapKeys)
     
      {
         if(keys.equals(eachEmployee.getEmployeeNumber()))
         {
            
            int sales = aMap.get(keys);
            int salesA = eachEmployee.getSales();
            eachEmployee.setSales(salesA+sales);
            employeeSet.add(eachEmployee);
            
            
            
         }
            
      } 
   }
   }  
   
   /**
    * B ii
    */
   public void nameEmployees()
   {
      for (Employee eachEmployee : employeeSet)
      {
         String name1;  
         String  enter = " Enter first and last name of employee with number : ";
         
         if (eachEmployee.getFirstName() == null && eachEmployee.getSecondName() == null)
         {try{
          name1 = OUDialog.request( enter + eachEmployee.getEmployeeNumber());
          String[] splits = name1.split(" ");
          String part1 = splits[0];
          String part2 = splits[1];
          eachEmployee.setFirstName(part1);
          eachEmployee.setSecondName(part2);
         }
  
         }
        
       }
   }
}