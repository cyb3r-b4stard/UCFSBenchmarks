import java.util.Scanner;
public class MadLib
{
    public static void main (String[] args) {
        System.out.println("This is a madlib about going to the zoo. You will be asked to give a word to fill in a blank in the story.");
        
        Scanner user_input = new Scanner(System.in);
        
        String N1;
        System.out.print("Animal: ");
        N1 = user_input.next();
        
        System.out.println("One day you went to the zoo. You walked up to the first cage but didn't see anything. Then you saw a " + N1".");
        
    }
}
   