public class Annuity
{
    public static void main(String[] args)
    {
        final long PMT = 10000;
        final double I = .08;
        final int N = 20;
        
        double part1 = Math.pow(1+I, N-1);
        double step2 = (part1 - 1)/I;
        double part2 = Math.pow(1+I, N-1);
        double step3 = part2 + 1;
        double annuity = PMT * (step2/step3);
        System.out.println("The annuity is: " + %.2annuity);
    }
}