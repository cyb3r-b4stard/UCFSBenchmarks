public class StringFun
{
    public static void main(String[] args)
    {
        String word = "create"; 
        System.out.println(word.length()*2);
        String another = word.replace("a", "4") 
                             .replace("t", "7");
                             .replace("c", "(");
                             .replace("e", "3");
        System.out.println(word.toUpperCase());
        System.out.println(another);
    }
}