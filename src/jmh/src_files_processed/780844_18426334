
import java.util.Scanner;
public class TextLab02st
{
	public static void main(String args[])
	{	
	    Scanner keyboard = new Scanner(System.in);
	    
	   System.out.print("Enter degrees in Celcius to be converted into Fahrenheit: ");
	   int x = keyboard.nextInt();
	   double celciusToFahrenheit = (1.8 * x) + 31;
	   System.out.println( x "degrees Celcius is "  + celciusToFahrenheit  "degrees Fahrenheit");
	    
	   
	    System.out.print("Enter three digit number: " );
	    int x = keyboard.nextInt();
	    System.out.println("You entered number: " + x);
	    
	    int thirdDigit = x%10;
	    
	    int digits1And2 = x / 10;
	    
	    int secondDigit = digits1And2 % 10;
	    
	    int firstDigit = ( digits1And2 / 10 ) % 10;
	    
	    
	  
	
	    
		System.out.println("Three-digit number being considered: " + x);
		System.out.println("The sum of its digits equals " + ( thirdDigit + secondDigit + firstDigit ) ); 
		

	}
}