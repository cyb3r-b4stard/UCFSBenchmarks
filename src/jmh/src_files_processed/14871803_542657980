import java.util.ArrayList;
public class Album{ 
    public String artiest;
    public String titel;
    private ArrayList<Nummer> lijst;
    public Album(String artiest, String titel){
        this.artiest = artiest;
        this.titel = titel;
        this.lijst = new ArrayList<Nummer> (); 
    }

    public String getArtiest(){
        return artiest;
    }

    public void addNummer (Nummer liedje){
        lijst.add(liedje);
    }

    public void addNummer(String titel, int duur){
        lijst.add(new Nummer(duur, titel));
    } 
    
    public Nummer getNummer(int index){
        return lijst.get(index);}
    public int getAantalNummer(){
        return lijst.size();
    }
    
    public void printLijst(){
        int i = 0;
        while (i < lijst.size()) 
        (System.out.println(lijst.get(i).getNummer())){
        i = i+1;
    }
    
   }
}