import java.util.*;
/**
 * #### ###### ## ####### #### ### ####### ### #############.
 * 
 * @###### (###### ### ### ####) 
 * @####### (#.# ##-##-####)
 */
public class Reservering
{
    private ArrayList<String> deelnemers;
    private int aantalVegetariers;
    
     /**
     * De constructor voor de objecten van de klasse Reservering.
     * @param aantalVegetariers
     */
    
    public Reservering()
    {
        this.deelnemers = deelnemers;
        this.aantalVegetariers = aantalVegetariers;
        
        ArrayList<String> deelnemers = new ArrayList<>();
    }
    
    /**
     * Deze methode zorgt voor het toevoegen van deelnemer en checked of deelnemer vegetariers is.
     * @return als de speler vegetariers is wel of niet.
     */
    
    public void voegDeelnemerToe(String naam, boolean isVegetarier) {
       isVegetarier = false; 
        if (deelnemers !=null)  {
            deelnemers.add(naam);
        }
        else {
            deelnemers.add(naam);
        }
    } 
        
    /**
     * Deze methode zorgt voor het outputten van het aantal vegetarierse deelnemers.
     * @return aantal vegetariers.
     */
    public int aantalVegetariers() {
        return aantalVegetariers;
    }
    
     /**
     * Deze methode zorgt voor het outputten van het aantal deelnemers.
     * @return aantal personen.
     */
    public int totaalAantalPersonen() {
       return (deelnemers.get;   
    }
    
     /**
     * Deze methode kijkt of er deelnemers zijn met de zelfde naam.
     * @return als naam wel of niet overeenkomt.
     */
   public boolean isErIemandMetDezeNaamInDezeReservering(String naam) 
    {
        for(String deelnemer : deelnemers) {
            if (deelnemer.equals(naam)) {
             return true;
            }
        }
        return false;
    }
}