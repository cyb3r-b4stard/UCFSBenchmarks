
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Cirkel
{
    private double dbStraal;
    private final double NUMMER_TWEE = 2;

    /**
     * Constructor1 met standaardgegevens
     */
    public Cirkel()
    {
        dbStraal = 0;
    }
    
     /**
     * Constructor2 met gewenste gegevens(invoeren in het begin)
     */
    public Cirkel(double dbInvoerStraal)
    {
        dbStraal = dbInvoerStraal;
    }

    /**
     * Nieuwe straal instellen
     */
    public void setStraal(double dbNieuweStraal)
    {
        dbStraal = dbNieuweStraal;
    }

    /**
     * Straal opvragen
     */
    public double getStraal()
    {
        return dbStraal;
    }
    
    /**
     * Omtrek opvragen
     */
    public double getOmtrek()
    {
        return NUMMER_TWEE * Math.PI * dbStraal;
    }
    
    /**
     * Oppervlakte opvragen
     */
    public double getOppervlakte()
    {
        return round((dbStraal *dbStraal * Math.PI), 2);
    }
    oppervlakte = (Math.pow(dbStraal ,2) * Math.PI);
}