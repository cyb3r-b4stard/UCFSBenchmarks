import java.util.*;
/**
 * ####### ########## ## ####### ##### ##### ## #######
 * @###### ###### ######
 * #####: ##
 */
public class Statistics {

    ArrayList data = new ArrayList();

    public Statistics() {

    }

    /**
     * Return the smallest number read so far, or Integer.MAX_VALUE if
     * nothing has been read yet.
     */
    public int getMin() {
        return 1;
    }

    /**
     * Return the largest number read so far, or Integer.MIN_VALUE if
     * nothing has been read yet.
     */
    public int getMax() {
        return 1;
    }

    /**
     * Return the average of the numbers read so far, or 0 if
     * nothing has been read yet.
     * If the average so far is not an integer, the fractional part is
     * thrown away. E.g. the average of {1,2} = 1.
     */
    public int getAvg() {
        int pos = 0;
        int sum = 0;
        while(pos < data.length())
        {
            sum = sum + data.get(pos);
            pos++
        }
        return sum/data.length();
    }

    /**
     * Return true iff at least one number was read.
     */
    public boolean haveData() {
        if(data.isEmpty())
        {
            return false;
        }
        else
        {
            return true;
        }
    }

    /**
     * Update the statistics with the numbers in text.
     * text must consist of whitespace separated numbers. text may be empty.
     */
    public void update(String text) 
    {
        int count = 0;
        int i;
        int sLength;
        int length = text.length();
        StringBuilder builder = new StringBuilder(text);
        Scanner scanner = new Scanner(text);
        while(count < length)
        {
            i = scanner.nextInt();
            data.add(i);
            System.out.println(i);
            String s = Integer.toString(i);
            sLength = s.length() + 1;
            count = count + sLength;
            text = builder.substring(sLength);
        }
    }
}
