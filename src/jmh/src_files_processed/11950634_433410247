public class Tierhandlung
{
    private String besitzer;
    private int anzahlTiere;
    private int maxAnzahlTiere;
    private double miete;
    private boolean offen;

    public Tierhandlung()
    {
        setBesitzer("Toni Tierlieb");
        setAnzahlTiere(5);
        setMaxAnzahlTiere(10);
        setMiete(100.0);
        setOffen(false);
    }

    public Tierhandlung(String besitzer, int anzahlTiere, int maxAnzahlTiere, double miete, boolean offen)
    {
        setBesitzer(besitzer);
        setAnzahlTiere(anzahlTiere);
        setMaxAnzahlTiere(maxAnzahlTiere);
        setMiete(miete);
        setOffen(offen);
    }

    public void setBesitzer(String besitzer)
    {
        this.besitzer = besitzer;
    }

    public void setAnzahlTiere(int anzahlTiere)
    {
        this.anzahlTiere = 0;
        int aT = this.anzahlTiere + anzahlTiere;
        this.anzahlTiere = aT;
        if(this.anzahlTiere >= 0 && this.anzahlTiere <= this.maxAnzahlTiere)
        {
            System.out.println(" Es gibt " + this.anzahlTiere + " Tiere in dieser Tierhandlung ");
        }
        else
        {
            System.out.println(" Es gibt nicht genug Platz für soviele Tiere!!! ");
        }
    }

    public void setMaxAnzahlTiere(int maxAnzahlTiere)
    {
        this.maxAnzahlTiere = maxAnzahlTiere;
    }

    public void setMiete(double miete)
    {
        this.miete = 0;
        double m = this.miete + miete;
        this.miete = m;
        if(this.miete >= 0)
        {
            System.out.println(" Die Miete beträgt " + this.miete + " Euro pro Monat ");
        }
        else
        {
            System.out.println(" Es gibt keine Mieten um weniger als 0 Euro!!! ");
        }
    }

    public void setOffen(boolean offen)
    {
        if(offen == true)
        {
            System.out.println(" Die Tierhandlung ist offen!!! ");
        }
        else
        {
            System.out.println(" Die Tierhandlung ist geschlossen!!! ");
        }
    }

    public String getBesitzer()
    {
        return this.besitzer;
    }

    public int getAnzahlTiere()
    {
        return this.anzahlTiere;
    }

    public int getMaxAnzahlTiere()
    {
        return this.maxAnzahlTiere;
    }

    public double getMiete()
    {
        return this.miete;
    }

    public boolean getOffen()
    {
        return this.offen;
    }

    public void printTierhandlung()
    {
        System.out.println(" Der Name des Besitzers ist " + this.besitzer);
        System.out.println(" Es gibt " + this.anzahlTiere + " Tiere in der Tierhandlung " );
        System.out.println(" Es gibt maximal " + this.maxAnzahlTiere + " in der Tierhandlung ");
        System.out.println(" Die Miete beträgt " + this.miete + " Euro pro Monat " );
        if(offen == true)
        {
            System.out.println(" Die Tierhandlung ist offen!!! ");
        }
        else
        {
            System.out.println(" Die Tierhandlung ist geschlossen!!! ");
        }
    }
    
    public void tierVerkauf(int anzahl)
    {
        if(anzahl > 0)
        {
            this.anzahlTiere = this.anzahlTiere - anzahl;
        }
        else
        {
            System.out.println(" Es können nicht weniger als 0 Tiere verkauft werden. ");
        }
    }
    
    public void mieteErhoehen(prozent)
    {
        mieteErhoehen
    }
}