import javax.swing.*;
public class presentacionChat
{
    private Novia rNovia = new Novia();
    
    public void PresentacionNovia ()
    {
    }
    
    public void ingresarDatos ()
    {
     rNovia.setNombre(JOptionPane.showInputDialog(null, "hola como te llamas?"));
     rNovia.setEdad(Integer.parseInt(JOptionPane.showInputDialog(null, "cuantos años tienes tu?")));
     rNovia.setColorOjos(JOptionPane.showInputDialog(null, "cual es tu color de ojos?"));
     rNovia.setTelefono(Integer.parseInt(JOptionPane.showInputDialog(null, "cual es tu telefono?")));
      
    }
    
    public void mostrarDatos ()
    {
     rNovia.setNombre(JOptionPane.showInputDialog(null, "hola como te llamas?"));
     rNovia.setEdad(Integer.parseInt(JOptionPane.showInputDialog(null, "cuantos años tienes tu?")));
     rNovia.setColorOjos(JOptionPane.showInputDialog(null, "cual es tu color de ojos?");
     rNovia.setTelefono(Integer.parseInt(JOptionPane.showInputDialog(null, "cual es tu telefono?"));
    }
 
}    
    