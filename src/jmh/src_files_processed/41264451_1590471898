public class CheckSentences
{
    /**
     * Constructor for objects of class CheckSentences
     * @param args is not used
     * @throws FileNotFoundException
     */
    public static void main(String[] args) throws FileNotFoundException
    {
        Scanner in = new Scanner(System.in);
        
        SpellChecker checker = new Spellchecker(misspellings.txt)
        boolean again = true;
        
        while (again)
        {
            System.out.println("Enter a sentence (or STOP); ");
            
            String sent = in.nextLine();
            
            System.out.println(checker.checkSentences(sent) + "incorrect")
            
            System.out.println()
            
            if(Sentence.equals("STOP"))
            {
                again = false;
            }
        }
        input.close();
            
}