import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class TextOutput
{
  public static void main (String[] args) 
    {
    Scanner input = new Scanner(System.in);
    boolean done = false;
    String getText;
    try
    {
        FileWriter writer = new FileWriter("sampleoutput.txt");
        while(!done)
    {
        System.out.print("What do you want to type?");
        getText= input.nextLine();
        writer.write(getText);
        writer.write("\n");
        System.out.println("Are you done?");
        getText = input.nextLine();
        if(getText.equals("yes"))
        {
            done = true;
        }
    }
        writer.close();
    }
    catch (IOException e)
      {
          e.printStackTrace(); 
        }
        
        Charset charset = Charset.forName("US-ASCII");
        Path path = Paths.get("sampleoutput.txt");
        try(BufferReader reader = Files.newBufferReader(path,charset))
        {
            String response = reader.readLine();
            while(response != null)
            {System.out.println(reponse);
                response = reader.readLine(); 
            }
}
}
   
        
    
   
    
    
    
    
    
    