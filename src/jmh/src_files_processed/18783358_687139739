import javax.swing.JOptionPane;

public class Pedido
{
    private Batata A;
    private Refrigerante B;
    private Chesseburger C;
    private Hambuger D;
    private Combo E;
    
  public Pedido (Batata novoBatata,Refrigerante novoRefrigerante,Chesseburger novoChesseburger,Hamburger novoHamburger)
  {

      Batata A =novoBatata;
      Refrigerante B=novoRefrigerante;
      Chesseburger C=novoChesseburger;
      Hamburger D=novoHamburger;
      Combo E=novoCombo;
    }
    public void MENU ( )
    {
        
       chamarPedidos(Integer.parseInt(JOptionPane.showInputDialog(null,"EScolha uma opção a seguir:\n1-BATATA\n2-REFRIGERANTE\n3-CHESSEBURGER\n4-HAMBURGER\n5-COMBO")));
    }

   public void chamarPedidos(int a)
   {
       
       switch(a)
       {
           case 1:
           a=1;
           JOptionPane.showMessageDialog(null,getBatata A ());
            break;
 
      
    
         case 2:
         a=2;
         
         JOptionPane.showMessageDialog(null,getRefrigerante B ());
         break;
         
         case 3:
         a=3;
         
         JOptionPane.showMessageDialog(null,getChesseburger C ());
         break;
       
         
         case 4:
         a=4;
         
           JOptionPane.showMessageDialog(null,getHamburger D ());
           break;
         
         case 5:
         a=5;
         
         JOptionPane.showMessageDialog(null,getCombo E ());
         break;
         
          default :
           JOptionPane.showMessageDialog(null,"Operação inexistente");
        }  
           
        public void imprimirNotaDoPedido()
        {
            String texto="***** Nota do Pedido *****\n\n\n\n\n" +
            
                               "Batata: " + Batata A.getBatata() +
                               "\nRefrigerante: " + Refrigetnate B.getRefrigerante() +      +
                               "\nChesseburger: " + Chesseburger C.getChesseburger() +
                               "\nHamburger: " + Hamburger D.getHambureger() +
                               "\nCombo: " + Combo E.getCombo();
                               
                               
           
           JOptionPane.showMessageDialog( null, texto, "Pedido", 1 );
           
        }
    }
           
       

    
    
    
   
