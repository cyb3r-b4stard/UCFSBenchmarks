class Rechnen
{
    void summeBerechnen()
    {
        int ergebnis;
        ergebnis = 4 + 5;
        System.out.println("Das Ergebnis ist: " + ergebnis);
    }    

    void Berechnen2()
    {
        double Arbeitsstunden;
        double Stundenlohn;
        double Verdienst;
        Arbeitsstunden = 18;
        Stundenlohn = 15;
        Verdienst = Arbeitsstunden * Stundenlohn;
        System.out.println("Arbeitsstunden:"+ Arbeitsstunden);
        System.out.println("Stundenlohn:"+ Stundenlohn);
        System.out.println("Damit habe ich letzte Woche:"+ Verdienst + "€ verdient."); 
    }
      
    void Berechnen3()
    {
        double Arbeitsstunden;
        double Stundenlohn;
        double Verdienst;
        Arbeitsstunden = 18.5;
        Stundenlohn = 15.30;
        Verdienst = Arbeitsstunden * Stundenlohn;
        System.out.println("Arbeitsstunden:"+ Arbeitsstunden);
        System.out.println("Stundenlohn:"+ Stundenlohn);
        System.out.println("Damit habe ich letzte Woche:"+ Verdienst + "€ verdient."); 
    }
} 
     import ch.aplu.util.*;
     
     class Rechnen2
     {
         void produktBerechnenConsole()
         {
             Console c = Console.init();
             
             int a, b, produkt;
             
             c.print("Gib die erste Zahl: ")
             a = c.read.double();
             c.print("Gib die zweite Zahl: ")
             a = c.read.double();
             
             produkt = a * b;
             
             c.println("Das Produkt aus " + a + " und " + b + " ist " + produkt);
             
             c.println ();
             c.println ("Weiter mit beliebiger Taste ...");
             c.getKeyWait();
             c.terminate();
            }
        }   
        
        
        
        
        
        
        
        
        
        
       
        
        
 