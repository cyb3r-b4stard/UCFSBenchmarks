package BaseDeDatos;



public class Editorial
{
    /**
     * parametros para el constructor que recibira los mismos
     */
   private String nombre;
   private int añoCreacion;
   private String representanteLegal;
   private int codigo;
   private String paisSede;
    
   /**
    * constructor sin parametros
    */
    public Editorial(){
       
    }
   /**
     * constructor con parametros
     * @param nombre
     * @param añoCreacion
     * @param representanteLegal
     * @param codigo
     * @param paisSede
     */
   public Editorial(String nombre, int añoCreacion, String representanteLegal, int codigo, String paisSede){
       this.nombre=nombre;
       this.representanteLegal=representanteLegal;
       this.codigo=codigo;
       this.paisSede=paisSede;
    }
    
    /**
     * modifica el nombre
     * @param nombre
     */
    public void setNombre(String nombre){
        this.nombre=nombre;
    }
    /**
     * devuelve nombre
     * @return nombre
     */
    public String getNombre(){
        return this.nombre;
    }
    
    /**
     * modifica el añoCreacion
     * @param añoCreacion
     */
    public void setAñoCreacion(int añoCreacion){
        this.añoCreacion=añoCreacion;
    }
    /**
     * devuelve el añoCreacion
     * @return añoCreacion
     */
    public int getAñoCreacion(){
        return this.añoCreacion;
    }
    
    /**
     * modifica el representanteLegal
     * @param representanteLegal
     */
    public void setRepresentanteLegar(String representanteLegal){
        this.representanteLegal=representanteLegal;
    }
    /**
     * devuelve representanteLegal
     * @return representanteLegal
     */
    public String getRepresentanteLegal(){
        return this.representanteLegal;
    }
    
    /**
     * modifica el codigo
     * @param codigo
     */
    public void setCodigo(int codigo){
        this.codigo=codigo;
    }
    /**
     * devuelve el codigo
     * @return codigo
     */
    public int getCodigo(){
        return this.codigo;
    }
    
    /**
     *  modifica el paisSede
     *  @param paisSede
     */
    public void setPaisSede(String paisSede){
        this.paisSede=paisSede;
    }
    /**
     * devuelve el paisOrigen
     * @return paisOrigen
     */
    public String getPaisSede(){
        return this.paisSede;
    }
    
    /**
     * metodo toString
     * @return retorna todos los datos del editorial String
     */
    public String toString(){
        return(this.nombre+" "this.añoCreacion+" "this.representanteLegal+" "this.codigo+" "this.paisSede+);
    }
}