/**
 * 
 */
public class ScanChoice
{
    public static void main (String[] args) 
    {
        Scanner kbReadInt    = new Scanner(System.in);
        Scanner kbReadDouble = new Scanner(System.in);
        Scanner kbReadString = new Scanner(System.in);
        
        int y = 0;
        double = doubleNumber = 0.0;
        int intNumber = 3;
        String stringPhrase = "";
        
        System.out.println(" Choose A Number: ");
        System.out.println("1) Interger");
        System.out.println("2) Double");
        System.out.println("3) String");
        
        y = kbReadInt.nextInt();
        
        if (y == 1)
        {
            System.out.print("Type your interger here: ");
            intNumber = kbReadInt.nextInt();
            System.out.println("\n" + "Your inteter number: " + intNumber);
        }
        if (y == 2)
        {
            System.out.print("Type your double here: ");
            doubleNumber = kbReadInt.nextInt();
            System.out.println("\n" + "Your double number: " + doubleNumber);
        }
        if (y == 3)
        {
            System.out.print("Type your string phrase here: ");
            stringPhrase = kbReadInt.nextInt();
            System.out.println("\n" + "Your string phrase number: " + stringPhrase);
        }
    }
}