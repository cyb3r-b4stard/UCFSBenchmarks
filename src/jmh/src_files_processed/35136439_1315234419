import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import java.util.*;
import java.io.*;
import java.text.*;
import java.util.regex.*;

class Calculator{
    public static void main(String args[]){
        String choice, rank, name, rep;
        int health, mana, damage, enemy, reputation;
        reputation = 1;
        rep = "a"
        health = 1;
        mana = 1;
        damage = 1;
        enemy = 1;
        Scanner rankchoice = new Scanner(System.in);
        System.out.println("What class do you want to be?");
        System.out.println("Human - Has overall average stats.");
        System.out.println("Orc - Has overall high stats. Not loved by humans.");
        System.out.println("Elf - Has higher mana, but low health and strength. Saved humans.");
        System.out.println("Dwarf - Has no mana, but higher health, and strength. Average reputation.");
        choice = rankchoice.nextLine();
        char ch = choice.charAt(0);
        System.out.println(" ");
        rank = "a";
        switch(ch){
            case 'H':
            case 'h':
                System.out.println("You choose human. Good choice.");
                System.out.println("Human stats are average.");
                System.out.println("Health: 10  Strength: 10  Mana: 10 Reputation: 50");
                rank = "Human";
                health = 10;
                mana = 10;
                damage = 10;
                reputation = 50;
                break;
            case 'O':
            case 'o':
                System.out.println("You choose orc. Sharp choice.");
                System.out.println("Orc stats are over average.");
                System.out.println("Health: 15  Strength: 15  Mana: 15 Reputation: 25");
                rank = "Orc";
                health = 15;
                mana = 15;
                damage = 15;
                reputation = 25;
                break;
            case 'E':
            case 'e':
                System.out.println("You choose elf. Magic choice.");
                System.out.println("Elf has high mana, but really low health and strength.");
                System.out.println("Health: 5  Strength: 5  Mana: 20 Reputation: 75");
                rank = "Elf";
                health = 5;
                mana = 20;
                damage = 5;
                reputation = 75;
                break;
            case 'D':
            case 'd':
                System.out.println("You choose dwarf. Short, but strong choice.");
                System.out.println("Dwarf has high strength and health, but no mana.");
                System.out.println("Health: 20  Strength: 20  Magic: 0 Reputation: 50");
                rank = "Dwarf";
                health = 20;
                mana = 0;
                damage = 20;
                reputation = 50;
                break;
        }
        System.out.println(" ");
        System.out.println(" ");
        Scanner fightchoice = new Scanner(System.in);
        System.out.println("Oh no! A monster jumped out in front of you! ");
        System.out.println("Do you want to attack or flee?");
        String fightchoicce = fightchoice.nextLine();
        char cch = fightchoicce.charAt(0);
        System.out.println(" ");
        switch(cch){
            case 'A':
            case 'a':
                reputation = reputation + 1;
                rep = "Hero";
                System.out.println("Ah, you are a fighter. That is good.");
                System.out.println("That monster died immediatly.");
                System.out.println("The next monster won't be so easy.");
                System.out.println("The " + rank + " class gains 1 reputation.");
                System.out.println("Reputation: " + reputation + ".");
                break;
            case 'F':
            case 'f':
                reputation = reputation - 1;
                rep = "Weakling";
                System.out.println("You let a monster past into the city.");
                System.out.println("The " + rank + " class loses 1 reputation.");
                System.out.println("Reputation: " + reputation + ".");
                break;
        }
        
    }
}