public class interLeave {
    public static void main(String[] args) {
        int[] list1 = [1,8,3,9];
        int[] list2 = [2,12,6,14];
        int[] weave = method(list1, list2);
        System.out.println(weave);
    }
    public int[] method (int[] list1, int[] list2) {
        int size  = list1.length + list2.length;
        int len1 = 0;
        int len2 = 0;
        int[] weave = new int[size];
        for(int i = 0; i < size; i++) {
            if(len1 < list1.length) {
                weave[i] = list1[len1];
                i++;
                len1++;
            }
            if(len2 < list2.length){
                weave[i] = list2[len2];
                i++;
                len2++;
            }
        }
    }
}