import java.util.Scanner;
/**
 *#### ## ####### #-#.
 */
public class BankAccountTester
{
   public static void main(String[] args){

      Scanner input = new Scanner(System.in);

      System.out.print("What is the account holder's name? ");
      String name1 = input.next();
      System.out.print("What is the initial balance? ");
      double bal1 = input.nextDouble();
      
      BankAccount newAcct = new BankAccount(name1, bal1);
      
      System.out.println(newAcct);
      
      System.out.println("Enter 1 to make a deposit, 2 to make a withdrawal, or 3 to quit: ");
      int response = input.nextInt();
      
      if(response == 1){
          System.out.print("How much would you like to deposit? ");
          double dep1 = input.nextDouble();
          System.out.println(name1 + "'s new balance is " + newAcct.madeDeposit(dep1));
        }
      else if(response == 2){
          System.out.print("How much would you like to withdraw? ");
          double wd1 = input.nextDouble();
          System.out.println(name1 + "'s new balance is " + newAcct.madeWithdrawal(wd1));
        }  
      else {
           System.out.println("Peace and chicken grease!");
        }
}
}
}