public class NumberToWords {
    public static void main(String[] args) {

        String units[] = {"zero","one","two","three","four","five","six","seven","eighth","nine","ten",
                "eleven","twelve","thirteen","fourteen","fifteen","sixteen","seventeen","eighteen","nineteen"};

        String tens[] = {" "," ","twenty","thirty","forty","fifty","sixty","seventy","eighty","ninety"
            };

	
        System.out.print("Number: ");
        int num = In.nextInt();

        while (num != -1)  { 
                       
            if (num >= 0 && num < 20)
                System.out.println(units[num]);  
           
            if (num >= 20 && num < 100 && num%10 == 0)
                System.out.println(tens[(num/10)]);
            else if(num >= 20 && num < 100)
               System.out.println(tens[(num/10)] + " " + units[num%10]); 
                
                           
            if (num >= 100 && num < 1000 && num%10 == 0 & num/10%10 == 0)
               System.out.println(units[num/10/10] + " hundred");
            else if ( num >=100 && num < 110)
               System.out.println (units[num/10/10] + " hundred" + units[num%10]
            else if (num >= 120 && num < 1000)
               System.out.println(units[num/10/10] + " hundred" + " and " + tens[num/10%10] + " " + units[num%10]); 

               System.out.print("Number: ");
                num = In.nextInt();

        }
    }
}