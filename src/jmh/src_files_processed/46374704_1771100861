import java.util.Scanner;
public class Bank_System{
    public static void main(Str ing[]args){
        String Userame;
          int Password, Passworda, Passwordb, Passwordc;
          Password = 12345;
          Scanner scan = new Scanner(System.in);
          System.out.print("Your Username:");
          Userame = scan.nextLine();
          System.out.print("Your Password:");
          Passworda = scan.nextInt();
          while(Passworda == Password){
              System.out.println("Account Entered");
              System.exit(-1);
          }
          System.out.println("Access Failed, Your Password Again:");
          Passwordb = scan.nextInt();
          while(Passwordb == Password){
              System.out.println("Account Entered");
              System.exit(-1); 
          }
          System.out.println("Access Failed, Your Password Again:");
          Passwordc = scan.nextInt();
          while(Passwordc == Password){
              System.out.println("Account Entered");
