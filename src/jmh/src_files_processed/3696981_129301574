import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.*;
import javax.swing.border.*;
import java.applet.*;
import java.io.*;

public class Texteditor 
{
    private JFrame fenster;
    private JLabel bildLabel;
    private ImageIcon bild;
    
    public Texteditor()
    {
        fensterErzeugen();
    }
    
    private void fensterErzeugen()
    {
        fenster = new JFrame("Texteditor");
        JPanel contentPane = (JPanel)fenster.getContentPane();
        contentPane.setBorder(new EmptyBorder(6,6,6,6));
        contentPane.setLayout(new BorderLayout(6, 6));
        
        contentPane.add(bildLabel, BorderLayout.NORTH);
        
        fenster.pack();
        fenster.setVisible(true);
    }
    
    public void bildAendern(Raum raum)
    {
        if (raum.gibKurzbeschreibung().equals("in einem Rechnerraum")) {
            bild = new ImageIcon("labor.jpg");
        }
        if (raum.gibKurzbeschreibung().equals("vor dem Haupteingang der Universität")) {
            bild = new ImageIcon("draussen.jpg");
        }
        if (raum.gibKurzbeschreibung().equals("in einem Vorlesungssaal")) {
            bild = new ImageIcon("hoersaal.jpg");
        }
        if (raum.gibKurzbeschreibung().equals("im Verwaltungsbüro der Informatik")) {
            bild = new ImageIcon("buero.jpg");
        }
        if (raum.gibKurzbeschreibung().equals("im Teleporter-Raum")) {
            bild = new ImageIcon("teleporter.jpg");
        }
        if (raum.gibKurzbeschreibung().equals("im Keller")) {
            bild = new ImageIcon("keller.jpg");
        }
        if (raum.gibKurzbeschreibung().equals("in der cafeteria der Uni")) {
            bild = new ImageIcon("cafeteria.jpg");
        }
        bildLabel.setIcon(bild);
        fenster.pack();
    }
}

}