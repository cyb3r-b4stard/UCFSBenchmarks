
public class BankBalance
{
    public int overdraftlimit;
    public int payment;
    public int currentbalance;
    
    
    public BankBalance()
    {
        overdraftlimit = 300;
        currentbalance = 200;
        payment = 0;
    }

    public int getBalance()
    {
       {
          return currentbalance;
       }
    }
    
    public void int makePayment(int payment)
    {
        currentbalance -= payment;
    }
    
    
}