import java.util.ArrayList;

public class Shooting
{
    public Shooting(Unit attackingUnit, Unit defendingUnit, int range)
    {
        ArrayList<Model> hitList = new ArrayList<Model>();
        
        for(Model m : attackingUnit.getModelList())
        {
            int shots = 0;
            while(shots < m.getWeapon().getNotes()
            if(m.getBs() >= Math.ceil(Math.random() * 6))
            {
                hitList.add(m);
            }
        }
        
        System.out.println(hitList);
        
        
    }
}