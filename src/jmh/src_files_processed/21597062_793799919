import java.util.*;                              
/**
 * ##### # ########### ## ##### ########_##### ####.
 * 
 * @###### (##### #####) 
 * @####### (######### #, ####)
 */
public class Baseball_Stats
{
   public static String setName()  
    {
         String name;    
         
         Scanner scan = new Scanner(System.in);  
         System.out.println("What is the name of the Pitcher?");   
         name = scan.nextLine();  
      
         return name; 
    }
   public static double setIP() 
    {
        double ipbb;   
        
        Scanner scan = new Scanner(System.in);
        
        System.out.println("Enter how many innings has your pitcher pitched: ");
        ipbb = scan.nextDouble();
        
        ipcalc = ((ipbb - Math.floor(ipbb))/.3)+ Math.floor(ipbb); 
        
        return ipbb;
    }
   public static double calcIP(double ip) 
    {
        double ipcalc;
        
        ipcalc = ((ipbb - Math.floor(ipbb))/.3)+ Math.floor(ipbb);
        
        return ipcalc
    }
   public static double calcERA(int er, double ipcalc)
    {
        double era;  
        
        era  = (9 * (er/ipcalc));
        
        return era;
    }
   public static double calcRatio(int hits, int walks, double ipcalc)
    {
        double ratio;  
        
        ratio =  ((hits + walks) / ipcalc);
        
        return ratio;
    }
   public static int setHits()
    {
        int hits;   
        
        Scanner scan = new Scanner(System.in);
        
        System.out.println("Enter how many hits your pitcher gave up: ");
        hits = scan.nextInt();
        return hits;
    }
   public static int setKK()
    {
        int strikeouts;   
        
        Scanner scan = new Scanner(System.in);
        
        System.out.println("Enter how many strikeouts your pitcher has: ");
        strikeouts = scan.nextInt();
        return strikeouts;
    }
   public static int setBB()
    {
        int walks;   
        
        Scanner scan = new Scanner(System.in);
        
        System.out.println("Enter how many walks your pitcher has: ");
        walks = scan.nextInt();
        return walks;
    }
   public static int setER()
    {
        int er;   
        
        Scanner scan = new Scanner(System.in);
        
        System.out.println("Enter how many earned runs your pitcher has given up: ");
        er = scan.nextInt();
        return er;
    }
   public static void OUTPUT(String name, double ipbb, double era, double ratio, int hits, int strikeouts, int walks, int er)
    {
        System.out.printf("\n %-15s","Name");
        System.out.printf("%10s","IP");
        System.out.printf("%10s","ER");    
        System.out.printf("%10s","Hits");     
        System.out.printf("%10s","K");
        System.out.printf("%10s","BB");
        System.out.printf("%10s","ERA");    
        System.out.printf("%10s","Ratio");     
        
        
        System.out.printf("\n %-15s", name);
        System.out.printf("%10.1f", ipbb);
        System.out.printf("%10s", er);
        System.out.printf("%10s", hits);
        System.out.printf("%10s", strikeouts);
        System.out.printf("%10s", walks);
        System.out.printf("%10.2f", era);
        System.out.printf("%10.2f", ratio);
    }
   public static void main(String[] args)
    {
       String name;
       double ipcalc,era,ratio,ipbb;     
       int hits,strikeouts,walks,er;
       
       System.out.println("\nWelcome to the ERA Calculator!");
       System.out.println("\n******************************");
       
       name = Baseball_Stats.setName();
       hits = Baseball_Stats.setHits();     
       strikeouts = Baseball_Stats.setKK();     
       walks = Baseball_Stats.setBB();
       er = Baseball_Stats.setER();
       ipbb = Baseball_Stats.setIP();
       ipcalc = Baseball_Stats.calcIP(ipbb);
       era = Baseball_Stats.calcERA(er,ipcalc);
       ratio = Baseball_Stats.calcRatio(hits,walks,ipcalc);
       Baseball_Stats.OUTPUT(name,ipcalc,era,ratio,hits,strikeouts,walks,er);
    }
}