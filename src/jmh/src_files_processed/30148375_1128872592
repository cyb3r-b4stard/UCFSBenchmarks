import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.layout.Pane;
import javafx.scene.paint.Color;
import javafx.stage.Stage;
import javafx.scene.shape.Line;
/**
 * ###### ######## ### #####
 * 
 * @###### ##### 
 * @####### ####.##.##
 * @##### ######
 */
public class GraphicAndLoops extends Application
{
    /**
     * Constructor for objects of class GraphicAndLoops
     */
    @Override
    public void start(Stage primaryStage)
    {
        Pane pane = new Pane();
        for(int x = 50; x <= 550; x++)
        {
            Line line1 = new Line(50, 50, 50, 450);
            line1.setStrokeWidth(3);
            line1.setStroke(Color.RED);
            
            
            pane.getChildren().addAll(x++);
        }
        
        Scene scene = new Scene(pane, 600, 500);
        primaryStage.setTitle("Graphics and Loops");
        primaryStage.setScene(scene);
        primaryStage.show();
       
        primaryStage.setOnCloseRequest(e -> System.exit(0));
    }
    public static void main(String[] args)
    {
        launch(args);
    }
    
   
}