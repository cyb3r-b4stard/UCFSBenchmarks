package subway;

public class TicketMachine
{
    private String city;
    private int price;
    private int balance;
    private int due;
    private int takings;
    private int insertedMoney; 

    public TicketMachine(String city, int price)
    {
        this.city = city;
        this.price = price;
        this.balance = 0;
        this.due = 0;
        this.takings = 0;
    }

    public String getCity() 
    { 
        return city;
    }

    public int getPrice()
    {
        return price;
    }

    public int getTakings()
    {
        return takings;
    }

    public void insertMoney(int insertedMoney)
    {
        balance = insertedMoney + balance;
    }

    public void chooseTicket(String ticketType)
    {
        if(ticketType.equals("RETURN"))
        {
            due = 2 * price;
        }
        else if(ticketType.equals("SINGLE"))
        {
            due = price;
        }
    }

    public String buyTicket(int due)
    {
        if(due > 0)
        {
            if(balance >= due)
            {
                double dueInPounds = due / 100.0;

                System.out.println("########################");
                System.out.println("# "+city+" Subway Ticket ");
                System.out.format("# Price Â£%3.2f\n", dueInPounds);
                System.out.println("########################");

                takings = takings + due;
                balance = balance - due;
                due = 0;

                return ("Your ticket is being printed");
            }
            else
            {
                return ("Please insert more money");
            }
        }
        {
            return("Please select a ticket type to buy");
        
          else due = 0;
         
            }
    }
}
