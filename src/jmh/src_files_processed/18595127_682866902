import java.util.*;
abstract public  class Sarkofaga extends Animal{
  Sarkofaga(String name,int speed,int f,int antoxi){
      super(name,speed,f,antoxi);
  }
 public void trofh( int tempx , int tempy, int x, int y, Animal an2, Animal an){
     if((x==tempx+1 && y==tempy)){
          if((an2.name.equals("P")||an2.name.equals("A"))){
                        Animal.psofa.add(an2);
                        an.antoxi=0;
                    }
      }else if((x==tempx-1 && y==tempy)){
          if(an2.name.equals("P")||an2.name.equals("A")){
                        Animal.psofa.add(an2);
                        an.antoxi=0;
                    }
      }else if((x==tempx && y==tempy+1)){
          if(an2.name.equals("P")||an2.name.equals("A")){
                        Animal.psofa.add(an2);
                        an.antoxi=0;
                    }
      }else if((x==tempx && y==tempy-1)){
        if(an2.name.equals("P")||an2.name.equals("A")){
                        Animal.psofa.add(an2);
                        an.antoxi=0;
                    }
    }else{an.antoxi++}
    } 
}
 
 