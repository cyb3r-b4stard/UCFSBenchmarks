
public class Award
{
    private String name;
    private Actor presenter;
    private Actor nominee1;
    private Actor nominee2;
    private Actor nominee3;
    
    public Award(String theName, Actor thePresenter)
    {
        name = theName;
        presenter = thePresenter;
    }

    public String setNominees(Role r1, Role r2, Role r3)
    {
        if (presenter = r1.getActor() && presenter = r2.getActor && presenter = r3.getActor)
        {
            nominee1 = r1;
            nominee2 = r2;
            nominee3 = r3;
            
        }
        else
        {
            return "Een genomineerde mag niet presenteren!";
        }
    }
    
    public Role getNominee1()
    {
       return nominee1;
    }
    
    public Role getNominee2()
    {
       return nominee2;
    }
    
    public Role getNominee3()
    {
       return nominee3;
    }
}








