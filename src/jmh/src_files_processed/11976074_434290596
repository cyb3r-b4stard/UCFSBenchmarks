import java.util.*;
public class Artikels
{
 private String omschrijving;
 private int aantal;
    
    public Artikels(String omschrijving, int aantal) {
        this.omschrijving = omschrijving;
        this.aantal= aantal;
        
}

public String getomschrijving (){
    return omschrijving;
}
 
public int getaantal (){
    return aantal;
}
    
public void verhoog() {
    aantal=aantal+1;
}

public void verlaag() {
    aantal=aantal-1;
}

public  void print(){
    System.out.println("Omschrijving"Omschrijving "- aantal" aantal

 }