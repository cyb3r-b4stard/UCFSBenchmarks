        g.fillRect(x, y, 
        g.setColor(Color.GRAY);
        g.fillRect(75,0,16,348);
        g.fillRect(166,0,16,348);
        g.fillRect(257,0,16,348);
        g.fillRect(0,75,348,16);
        g.fillRect(0,166,348,16);
        g.fillRect(0,257,348,16);
    }
    public static void drawLines2(Graphics g, int x, int y) 
    {
