    public static void drawingOne() {
        DrawingPanel p1 = new DrawingPanel(400, 200);
        p1.setBackground(Color.GREEN);
        Graphics g = p1.getGraphics();
        g.setColor(Color.RED);
        g.fillOval(0, 0, 200, 100);
        g.fillOval(200, 100, 200, 100);
        g.setColor(Color.BLACK);
        g.drawLine(100, 0, 100, 100);
        g.drawLine(0, 50, 200, 50);
        g.drawLine(200, 0, 200, 200);
        g.drawLine(0, 100, 400, 100);
        g.drawLine(300, 100, 300, 200);
        g.drawLine(200, 150, 400, 150);
    
    }
    public static void drawGrid(Graphics g, int x, int y, int squareLength, int squareWidth)
    {
        g.setColor(Color.BLACK); 
        g.fillRect(x, y, squareLength, squareWidth);  
    }
    
    public static void drawRectangles(Graphics g, int x, int y)
    {
        g.setColor(Color.BLACK); 
        g.fillRect(0,0,300,300);    
        g.fillRect(50,400,200,200); 
        g.fillRect(400,50,420,420); 
        g.fillRect(500,500,100,100);
         
    }
    
