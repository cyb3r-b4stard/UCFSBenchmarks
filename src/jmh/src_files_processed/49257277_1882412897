package actor;
import info.gridworld.grid.Grid;
import info.gridworld.grid.Location;
import java.awt.Color;
import java.io.*;
import java.util.*;

public class FronteirBug extends Bug
{
    private int cnt = 0;
    cnt = 0;
    private ArrayList<Location> list = new ArrayList<Location>();

    public FronteirBug()
    {
        setColor(Color.BLACK);

    }

    public FronteirBug(Color bugColor)
    {
        setColor(bugColor);
    }

    public void act()
    {
        Grid gr = getGrid();
        Location loc = getLocation();

        ArrayList<Location> vall = gr.getAdjacentLocations(loc);

        for(int lcv = 0; lcv < vall.size(); lcv++)
        {
            location spot = vall(lcv);
            for(int lcv2 = 0; lcv2 < list.size(); lcv2++)
            {
                if(spot.equals(list.get(lcv)))
                {
                    vall.remove(lcv);
                    lcv--;
                }
            }
        }
        
        if(val.size() == 0)
        {
            System.out.println("You all done! at slot " + cnt)
        }
        else
        {
            cnt++;
            list.add(loc);
            int n = (int)(Math.random() * vall.size() + 0;
        }
    }
}
