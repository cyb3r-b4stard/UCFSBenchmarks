import java.io.*;
public class Yfun {
    public static void main (String[]args) throws IOException{
        double x;
        BufferedReader citac = new BufferedReader (new InputStreamReader (System.in));
        do{
            System.out.print("Unesite vrijednost x : ");
            x=Double.parseDouble(citac.readLine());
        } while(Math.abs(x)>=1);
        
            
        System.out.println("Vrijednost argumenta x je " +x+ ", a vrijednost funkcije je " +funkcijaY(x));
    }
  public static double funkcijaY(double i) {
      double y, y0=0., y1=i, p=1., t=10e-8;
      while((y1-y0)>t){
          y0=y1;
          p=p+2;
          y1=(y0+Math.pow(i,p))/p;
          return y1;
        }
          
}}}
            
