import Java.io.*;
public static veicolo {int m,ec,sf,vi,g;
                            final double a = 9,8;
                            system.out.printl ("inserisci il valore di massa del veicolo")
                            InputStreamReader input = new ImputStreamReader (System.in);
                            BufferedReader tastiera = new BufferedReader(input);
                            try {double a =tastiera.readLine();
                                 a=double.parse.double(a);
                                }
                            catch (io exception ex);
                            system.out.printl ("inserisci il valore della velocita iniziale del veicolo(in metri al secondo)")
                            InputStreamReader input = new ImputStreamReader (System.in);
                            BufferedReader tastiera = new BufferedReader(input);
                            try {double vi =tastiera.readLine();
                                 vi=double.parse.double(vi);
                                }
                            catch (io exception ex);
                            system.out.printl ("inserisci il valore di attrito gomme asfalto del veicolo")
                            InputStreamReader input = new ImputStreamReader (System.in);
                            BufferedReader tastiera = new BufferedReader(input);
                            try {double g =tastiera.readLine();
                                 g=double.parse.double(g);
                                }
                            catch (io exception ex);
                            double sf = (vi*vi)/(250*g);
                            system.out.printl("lo spazio di frenata del veicolo e' : " +sf);
                            double ec= 0,5*m*(vi*vi);
                            system.out.printl("l' energia cinetica del veicolo e' : " +ec);
                           }
                                        