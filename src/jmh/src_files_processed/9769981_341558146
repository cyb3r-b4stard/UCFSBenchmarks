/**
 *   ###### # ##### ###### ## # ######## ##### ##### ###### #########
 */
public class Train
{
    private int move;
    private int direction;
    /**
     *   Initializing variables 
     */
    public Train()
    {
        int start = 0;
        int move = 0;
        int direction = +1;
        int distance = 0;
    }

    /**
     *  moves the train the specified number of stops in the current direction  
     *  @param numberOfStops is the amount of stops the train is going to past
     */
    public void move(int numberOfStops)
    {
        move = move + numberOfStops;
        direction = move*5.from.distanceToEnd();
    }

    /**
     *   reverses the direction of the train
     */

    public void turn()
    {
        direction = -1;

    }

    /**
     *  Calculate the distance the train is from the start of the track
     *  @return returns the distance the train is from the start
     */

    public int distanceToStart()
    {
        return move*5;
    }

    /**
     *   Calculates the distance the train is from the end of the track
     *   @return returns the distance the train is from the end
     */

    public int distanceToEnd()
    {
        int end = 50;
        return end - move*5;
    }
}