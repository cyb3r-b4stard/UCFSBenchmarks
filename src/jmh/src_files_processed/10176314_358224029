
public class Lotto
{
    double Kugeln;
    double Kfak;
    double a;
    
    double Gezogen;
    double Gfak;
    double b;
    
    double KminusG;
    double KminusGfak;
    double c;
    
    double Kombinationsmöglichkeiten;



   
    public Lotto(double pKugeln, double pGezogen)
    {
        Kugeln = pKugeln;
        Gezogen = pGezogen;
        Kfak = 1;
        Gfak = 1;
        KminusGfak = 1;
        

    }

  
    public void rechnen()
    {
              
        for(double a =1; a<=Kugeln; a++)
        {
            Kfak = Kfak * a;            
        }
        
        for(double b =1; b<=Gezogen; b++)
        {
            Gfak = Gfak * b;
        }
        
        KminusG = Kugeln - Gezogen;
        
        for(double c =1; c<=KminusG; c++)
        {
            KminusGfak = KminusGfak * c;
        }
        
        Kombinationsmöglichkeiten = Kfak / (Gfak * KminusGfak);
        
        System.out.println("Wenn von"+" "+Kugeln+" "+"Kugeln"+" "+Gezogen+" ""werden, dann gibts es"+" "+Kombinationsmöglichkeiten+" "+"Kombinationsmöglichkeiten");
    }
}