import sum.kern.*;

public class zeichnen
{
    Bildschirm derBildschirm;
    Stift meinStift;
    Maus MeineMaus;
    /**
     * Initialisierung fuer Objekte der Klasse zeichnen
     */
    public zeichnen()
    {
        derBildschirm = new Bildschirm(800, 600);
        meinStift = new Stift();
        meineMaus = new Maus();
        this.zeichne();        
    }

    /**
     * Eigentliche Zeichenmethode
     */
    public void zeichne()
    {
        double lX;
        double lY;
        do
        {
            lX=meineMaus.hPosition();
            lY=meineMaus.vPosition();
            meinStift.bewegeBis(lX,lY);
        }
        while(!meineMaus.ist gedr√ºckt());
    }
}