
import java.awt.*;
import java.io.*;
import java.util.*;

public class first_3_perfect_numbers
{


    public static void main (String[] args)
    {
        int power = 1;
        int i = 1;
        
        
        
        System.out.println ("Greetings, ");
        
        for (i >= 3; i = i + 1;)
        {
            double perfect_num1 = Math.pow (2, power);
            double perfect_num2 = Math.pow (2, (power + 1) - 1);
            power = power + 1;
            
            System.out.println (perfect_num1 * perfect_num2);

        }
        System.out.println ("Thank you for using my program batman");

    } 
} 
