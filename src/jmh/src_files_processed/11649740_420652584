
/**
 * ##### # ########### ## ##### ########## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class LineTester
{
    SketchPad pad = new SketchPad();
    Curve l1 = new Line(.2,.4,.3,.2);
    Curve l2 = new Line(.3,.2,.7,.2);
    Curve l3 = new Line(.7,.2,.8,.4);
    Curve l4 = new Line(.2,.4,.8,.4);
    l1.draw(pad);
    l2.draw(pad);
    l3.draw(pad);
    l4.draw(pad);
}