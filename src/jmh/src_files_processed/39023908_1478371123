import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import javax.swing.event.*;
import java.beans.*;
import javax.swing.ImageIcon;
public class Controlador implements ActionListener
{
    private final String TITULO;
    private final ImageIcon IMAGEN;
    private JOptionPane interfaz;
    private SopaLetras sopa;
    private JButton instrucciones;
    private JButton reiniciar;
    private JButton cerrar;
    private JLabel info;
     private JButton boton;
    private JButton boton1;
    private JButton boton2;
    private JButton boton3;
    private JButton boton4;
    private JButton boton5;
    private JButton boton6;
    private JButton boton7;
    private JButton boton8;
   
    
    
   

    /**
     * Constructor de la clase Controlador.
     */
    public Controlador()
    {
        TITULO = "TC1 Grupo 8A";
        IMAGEN = new ImageIcon(this.getClass().getResource("f1.png"));
        interfaz = new JOptionPane();
        sopa = new SopaLetras(this);
        
    }
     public void actionPerformed(ActionEvent evento)
    {

        if(evento.getSource()==instrucciones){
        }
        if(evento.getSource() == cerrar){
            sopa.setVisible(false);
        }
        if(evento.getSource() == reiniciar){
            sopa.setVisible(false);
            sopa.iniciar();
            
            sopa.setVisible(true);
        }
        if((evento.getActionCommand().equals("S"))){

            sopa.cambiarColor1();

        }
        if((evento.getActionCommand().equals("U"))){

            sopa.cambiarColor2();

        }
        if((evento.getActionCommand().equals("N"))){

            sopa.cambiarColor3();

        }
        if((evento.getActionCommand().equals("O"))){

            sopa.cambiarColor4();

        }
        if((evento.getActionCommand().equals("M"))){

            sopa.cambiarColor5();

        }
        if((evento.getActionCommand().equals("B"))){

            sopa.cambiarColor6();

        }
        if((evento.getActionCommand().equals("R"))){

            sopa.cambiarColor7();

        }
        if(((evento.getActionCommand().equals("E"))){

            sopa.cambiarColor8();
            sopa.setVisible(false);

            interfaz.showMessageDialog(null,"Felicidades,ganaste");

        }
    }
     /**
     * Inicia el programa.
     */
    public static void main(String[] args)
    {
        Controlador controlador = new Controlador();
        controlador.iniciar();
    }

    /**
     * Inicia el programa.
     */
    public void iniciar()
    {
        sopa.iniciar();
    }
}