/**
 * ##### ### ####### ## ######
 */
public class LooperDemo
{
    public static void main(String[] args)
    {
        Looper loopy = new Looper();
        
        System.out.println(loopy.sumOfPowersOfTwo(1));
        System.out.println("Expected: 0");
        System.out.println(loopy.sumOfPowersOfTwo(2));
        System.out.println("Expected: 1");
        System.out.println(loopy.sumOfPowersOfTwo(25));
        System.out.println("Expected: 31");
        System.out.println(loopy.sumOfPowersOfTwo(16));
        System.out.println("Expected: 15");
        
        System.out.println(loopy.everyOtherLetter("cats"));
        System.out.println("Expected: ct");
        System.out.println(loopy.everyOtherLetter("teacher"));
        System.out.println("Expected: tahr");
        System.out.println(loopy.everyOtherLetter("Java is fun"));
        System.out.println("Expected: Jv sfn");
        