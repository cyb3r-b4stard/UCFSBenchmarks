import java.util.Scanner;

public class User {

    public static void main(String[] args){
        System.out.println("creates a new Orca Card");
        OrcaCard orcaCard1 = new OrcaCard(40.00);
        System.out.println("initial balance: " + orcaCard1.inputInitialBalance());
        
        System.out.println("\nBuying a $5 ticket: ");
        orcaCard1.buyTrip(5.00);
        System.out.println(orcaCard1.toString());
        
        System.out.println("\nAdding $100 to my Orca Card: ");
        orcaCard1.topUp(100.00));
        System.out.println(orcaCard1.toString());
        
        System.out.println("\nBuying a $10 ticket: ");
        orcaCard1.buyTrip(10.00);
        System.out.println(orcaCard1.toString());
        
        System.out.println ("Average ticket price: "  + orcaCard1.getAverageTripCost());
        System.out.println("Number of trips taken: " + orcaCard1.getNumTrips());
        System.out.println("total spent = " + orcaCard1.getTotalSpending());
        
  
        
 
        
    }
}
        
        
        