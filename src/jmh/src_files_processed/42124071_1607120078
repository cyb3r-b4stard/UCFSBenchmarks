public class Quiz {
    private static final int MAX_VKLAD = 200; 
    private static final int MIN_VKLAD = 10;
    private String menoSutaziaceho;
    private int stavUctuSutaziaceho;
    private int i;
    
    
    /**
     * Konstruktor pre vytvorenie Quizu s danym nazvom 
     */
    public Quiz(String menoSutaziaceho, int pocStavSutaziaceho)
    {
        this.menoSutaziaceho = menoSutaziaceho;
        this.stavUctuSutaziaceho = 0;
        if(pocStavSutaziaceho>0 && pocStavSutaziaceho<=MAX_VKLAD)
        {
            stavUctuSutaziaceho = pocStavSutaziaceho;
            
        }
    }
    
    public Quiz (String menoSutaziaceho)
    {
        this(menoSutaziaceho,0);
    }
    
    
   public Quiz ()
   {
       this("Testovaci quiz",0);
    }
    
   public String toString()
   {
       return String.format ("[Quiz: meno = %s, stav = % 10d]",
       menoSutaziaceho, stavUctuSutaziaceho);
    }
    
   /**
    * if s equals
    * @return vysledok
    */
   
   public String prva ()
  {    
  
  Scanner klav = new Scanner(System.in);    
  String vysl;
  String in;
  klav = new Scanner(System.in);
  in = klav.nextLine();
  
  if (in.equals ("2"))
  {
      vysl = "Sikovny si!";
      i++;
  } 
  else
  {
         vysl = "Nie si sikovny !";
         
        } 
  System.out.println (vysl);
  return vysl;
} 



  /**
    * if s equals
    * @return vysledok
    */
   
   public String druha ()
  {    
  
  Scanner klav = new Scanner(System.in);    
  String vysl;
  String in;
  klav = new Scanner(System.in);
  in = klav.nextLine();
  
  if (in.equals ("2"))
  {
      vysl = "Sikovny si!";
      i++;
      
  } 
  else
  {
         vysl = "Nie si sikovny !";
         
        } 
  System.out.println (vysl);
  return vysl;
} 
       
