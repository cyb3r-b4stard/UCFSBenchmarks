/**
    * if s equals
    * @return vysledok
    */
   
   public String jedenast (int i)
  {    

  
      
  System.out.println (i);
  return ("vysledok");,i;
} 
 public int novyZostatok(int vstVklad)
 {
     
     
     stavUctuSutaziaceho = stavUctuSutaziaceho + vstVklad;
     System.out.println("Suma sa pripocitala  na tvoje konto, novy zostatok je:");
     return stavUctuSutaziaceho;
 }  
}
