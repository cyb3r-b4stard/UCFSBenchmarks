/**
    * if s equals
    * @return vysledok
    */
   
   public String piata ()
  {    
  
  Scanner klav = new Scanner(System.in);    
  String vysl;
  String in;
  klav = new Scanner(System.in);
  in = klav.nextLine();
  
  if (in.equals ("Java"))
  {
      vysl = "Sikovny si!";
