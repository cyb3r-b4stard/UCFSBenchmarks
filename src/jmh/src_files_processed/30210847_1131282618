import java.util.ArrayList;
import java.util.Arrays;
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Flower
{
    private String[]color;
   ;
    private int[]count;

    /**
     * Constructor for objects of class Flower
     */
    public Flower()
    {

        color = new String[10];
        count = new int[10];
    }

    public void addFlower(int amount, String colors)
    {
        if ((amount > 10)||(amount < 1)){
            System.out.println("Insert a value less than 10");
        }
        else{    count[] = amount;
            color[] = colors; 
        }
    }

    public void printDetails()
    {
        for ( int index = 0; index > 10; index ++){
            System.out.println("The flower color is: " + color + "The amount is: " + count);
        }
    }  

    public void pickFlowers()
    {
        for(int count:count){
            count = count - 1;
        }
    }
}
