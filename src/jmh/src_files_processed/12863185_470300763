public class BandBooster
{
    static int boxesSold;
    String name;
    public BandBooster(String name)
    {
        boxesSold = 0;
        this.name = name;
    }

    public String getName()
    {
        return name;
    }

    public void updateSales(int boxesSold)
    {
        this.boxesSold = boxesSold;
    }

    public int getTotalSales()
    {
        return boxesSold;
    }

    public double getTotalRevenue()
    {
        return (double)(boxesSold) * 2.75;
    }

    public String toString()
    {
        return name + ": " + boxesSold + ", " + ;
    }

    public static void main(String[] args)
    {
        BandBooster billy = new BandBooster("Billy");
        billy.updateSales(5);
        System.out.println(billy.getTotalSales());
        System.out.println(billy);
    }
}