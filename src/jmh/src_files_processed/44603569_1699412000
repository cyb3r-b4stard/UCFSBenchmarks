public class Testumgebung
{
    public static void main( String[] args )
    {
        IntIntPairs testPairs = new IntIntPairs( 20 );
        testPairs.put(7,3); testPairs.put(4,3); testPairs.put(1,-9); testPairs.put(6,6); testPairs.put(2,8); 
        testPairs.put(41,12); testPairs.put(9,-11); testPairs.put(8,12); testPairs.put(5,-60); testPairs.put(14,18); 
        testPairs.put(0,12); testPairs.put(-9,-16); testPairs.put(0,0); testPairs.put(17,32); testPairs.put(1,1);

        
        System.out.println("testPairs.show(): "); testPairs.show();
        System.out.print("sumUp(testPairs): " + sumUp(testPairs) ); System.out.println();
        
        System.out.println("testPairs.show(): "); testPairs.show();
        System.out.println("sumUpEven(testPairs): " + sumUpEven(testPairs) ); System.out.println();
        
        System.out.println("testPairs.show(): "); testPairs.show();
        System.out.println("deleteKeyNumber6(TestPairs): "); deleteKeyNumber6(testPairs); testPairs.show();
    }
    
    public static int sumUp(IntIntPairs pairs)
    {
        return pairs.accumulate( (k,v) -> { if (k==0) { return v; } else { return 0; } } );
    }
    
    public static int sumUpEven(IntIntPairs pairs)
    {
        return pairs.accumulate( (k,v) -> {if (k%2==0) { return v; } else { return 0; }});
    }
    
    public static void deleteKeyNumber6(IntIntPairs pairs)
    {
        pairs.remove( (k,v) -> {if (k==6){return true;} else {return false;}}); 
    }
    
    public static void manipulateKeyPlus10(IntIntPairs pairs)
    {
        pairs.manipulate( (k,v) -> (k+10), (v));
    }
    
}