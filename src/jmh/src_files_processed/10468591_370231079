public class Colleges
{
    public static void main(String[] args)
    {
        String[] colleges = { "Stanford", "UC Los Angeles", "University of Southern California", "UC Irvine", "UC Berkeley" }
        
        int min = 1000; 
        String shortestName = new String()
        for( int i = 0; i < colleges.length; i++)
        {
            String name = new String( colleges[i] ); 
            System.out.println(  "Name of College: " + colleges[i] ); 
            System.out.println(  "Length of College name: " + name.length() ); 
            if( name.length() < min )
            {
                shortestName = colleges[i];
            }
        }
        System.out.println( "College with shortest name: " + shortestName );

    } 
} 
