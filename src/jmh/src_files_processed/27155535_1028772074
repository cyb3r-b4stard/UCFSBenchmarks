package Gravity;


/**
 * ########### ### #.## #######
 *
 * @##### ######
 * @##.#
 */
import java.util.Scanner;
import java.io.File;
import java.io.IOException;
import java.io.PrintWriter;
public class Gravity
{
    public static double[] calcGravity(double[] radius, double[] mass)
	{
	    radius = new double[10];
	    mass = new double[10];
	    int planet;
	    double[] gravity;
	    gravity = new double[10];
	    double multiplier = 6.67E-11;

		if(radius[planet] > 0 || mass[planet] > 0)
		{
		    gravity[planet] = ((multiplier * mass[planet]) / (radius[planet] * radius[planet]));
		  }
		else
		{
		    gravity = null;
		  }
	}


	public static String printResults(String[] name, double[] radius, double[] mass, double gravity[])
	{
	    int planet;
	    System.out.printf("%15s%15s%15s%15s", name[planet], radius[planet], mass[planet], gravity[planet]);
	}


	public static Str printToFile(double[] gravity)throws IOException
	{
	    int planet;
		PrintWriter outFile = new PrintWriter(new File("README.txt"));
        outFile.println(gravity[planet]);
        outFile.close();
	}

    public static void main(String[] args)throws IOException
    {
		String[] name;
		name = new String[10];
		name[1] = "Mercury";
		name[2] = "Venus";
		name[3] = "Earth";
		name[4] = "Mars";
		name[5] = "Jupiter"; 
		name[6] = "Saturn";
		name[7] = "Uranus"; 
		name[8] = "Neptune";
		name[9] = "Pluto";
		
		double[] radius;
		radius = new double[10];
		radius[1] = 2439.7;
		radius[2] = 6051.9;
		radius[3] = 6378;
		radius[4] = 3402.5;
		radius[5] = 71492;
		radius[6] = 60270;
		radius[7] = 25562;
		radius[8] = 24774;
		radius[9] = 1195;
		
		double[] mass;
		mass = new double[10];
		mass[1] = 3.3022 * Math.pow(10,23);
		mass[2] = 4.8685 * Math.pow(10,24);
		mass[3] = 5.9736 * Math.pow(10,24);
		mass[4] = 6.4185 * Math.pow(10,23);
		mass[5] = 1.8986 * Math.pow(10,27);
		mass[6] = 5.6846 * Math.pow(10,26);
		mass[7] = 8.6810 * Math.pow(10,25);
		mass[8] = 1.0243 * Math.pow(10,26);
		mass[9] = 1.312 * Math.pow(10,22);
        
		for(int planet = 1; planet <= 9; planet++)
		{
		    double[] gravity;
	        gravity = new double[10];
		    gravity[planet] = calcGravity[planet](radius[planet], mass[planet]);
		    printToFile(gravity[planet]);
		}

		System.out.printf("%20 Planetary Data");
		System.out.println();
		System.out.printf("Planet%10 Diameter (km)%10 Mass (kg)%10 g (m/s^2)");
		System.out.println();
		for(int dash = 0; dash <= 50; dash++)
		{
		    System.out.print("-");
		}
		System.out.println();
		System.out.printf("%10", printResults);
    } 
}
