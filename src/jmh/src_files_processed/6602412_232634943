import java.util.ArrayList;

public class Avdelning
{
    private ArrayList<Anstalld> avdelningensAnstallda;
    
    
    public Avdelning()
    {
        avdelningensAnstallda = new ArrayList<Anstalld>();
    }
    
    public void laggTillAnstalld(int id, String fNamn, String eNamn, int lon)
    {
        boolean available = true;
        for(int i = 0; i < avdelningensAnstallda.size(); i++)
        {
            if(avdelningensAnstallda.get(i).getId() == id)
                available = false;
        }
        
        if(available == true)
        {
            Anstalld newemp = new Anstalld(id, fNamn, eNamn, lon);
            avdelningensAnstallda.add(newemp);
            System.out.println("Welcome "+ newemp.getFNamn());
        }
        else
            System.out.println("ID not available");
    }