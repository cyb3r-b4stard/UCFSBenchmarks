import java.util.*;
public class Car {

private int speed;
private int price;
private String colour;

public Car (int mySpeed, int myPrice, String myColour) {
speed = mySpeed;
colour = myColour;
price = myPrice;
}

public static void main (String [] args) {
Scanner sc = new Scanner(System.in);

System.out.println("Enter a number 1,2,3 to get a car");
int choice = sc.nextInt();

Car myCar = ;
switch (choice) {
    case 1 : Car myCar = new Car(120, 100000, "Brown");
    break;
    
    case 2 : Car myCar = new Car(110, 90000, "Yellow");
    break;
    
    case 3 : Car myCar = new Car(200, 200000, "Hot Pink");
    break;
    
    default : System.out.println("Invalid number");
    break;
}
while (true){
System.out.println("Enter 1 for the car's price");
System.out.println("Enter 2 for the car's speed");
System.out.println("Enter 3 for the car's colour");


int choice2 = sc.nextInt();

switch (choice2) {
    case 1 : myCar.printPrice();
    break;
    
    case 2 : myCar.printSpeed();
    break;
    
    case 3 : myCar.printColour();
    break;
    
    default : System.out.println("Invalid number");
}
}
}

public void printPrice(){
    System.out.println(price);
}
public void printColour(){
    System.out.println(colour);
}
public void printSpeed(){
    System.out.println(speed);
}
}