 * @######  ####### ####### ### ##### #. ###### ######### ### #. ##### (##.##.##)
 * @####### #.#  (#. ###### ####)
 */
public class Zeichnung6
{
    private Quadrat wand;
    private Quadrat fenster;
    private Quadrat fenster2;
    private Dreieck dach;
    private Kreis sonne;
    private Kreis sonne2;
    private Quadrat tuer1;
    private Quadrat tuer2;

    

    /**
     * Erzeuge ein Exemplar der Klasse Zeichnung
     */
    public Zeichnung6()
    {
        wand = new Quadrat();
        dach = new Dreieck();
        sonne = new Kreis ();
        sonne2 = new Kreis ();
        fenster= new Quadrat ();
        fenster2= new Quadrat ();
        tuer1= new Quadrat ();
        tuer2= new Quadrat ();
             
    }

    /**
     * Zeichne die Zeichnung.
     */
    public void zeichne()
    {
        wand.setzePosition(60,130);
        wand.setzeSeitenlaenge(100);
        wand.farbeAendern("blau");
        wand.vertikalBewegen(45);
        wand.horizontalBewegen(80);
        wand.sichtbarMachen();
                
        dach.setzeBreite(110);
        dach.setzeHoehe(50);
        dach.vertikalBewegen(110);
        dach.horizontalBewegen(140);
        dach.farbeAendern("rot");
        dach.sichtbarMachen();
        
        fenster.vertikalBewegen(130);
        fenster.horizontalBewegen(95);
        fenster.farbeAendern("weiss");
        fenster.sichtbarMachen();
              
        fenster2.vertikalBewegen(130);
        fenster2.horizontalBewegen(135);
        fenster2.farbeAendern("weiss");
        fenster2.sichtbarMachen();
                
        tuer1.vertikalBewegen(195);
        tuer1.horizontalBewegen(145);
        tuer1.farbeAendern("schwarz");
        tuer1.sichtbarMachen();
                
        tuer2.vertikalBewegen(175);
        tuer2.horizontalBewegen(145);
        tuer2.farbeAendern("schwarz");
        tuer2.sichtbarMachen();
             
        sonne2.setzeDurchmesser(50);
        sonne2.farbeAendern("rot");
        sonne2.horizontalBewegen(70);
        sonne2.sichtbarMachen();
                
        sonne.sichtbarMachen();
        sonne.setzeDurchmesser(50);
        sonne.farbeAendern("gelb");
               
        sonnenuntergang();
        
    }
    
    public void sonnenuntergang()
    {
     sonne.langsamVertikalBewegen(265);
     sonne2.langsamVertikalBewegen(265);
    }

    /**
     * Ändere die Darstellung in schwarz-weiß.
     */
    public void inlichtAus()
    {
      
            wand.farbeAendern("schwarz");
            fenster.farbeAendern("weiss");
            dach.farbeAendern("schwarz");
            sonne.farbeAendern("schwarz");
            sonne2.farbeAendern("schwarz");
           
        }
    }

    /**
     * Ändere die Darstellung in Farbe.
     */
    public void inFarbeAendern()
    {
        if(wand != null)   
        {
            wand.farbeAendern("rot");
          
        }
    }
    
   
    
}