import kareltherobot.*;

public class StairClimberDriver implements Directions
{
	public static void main(String args[])  
    {
        StairClimber pat;
        pat = new StairClimber(1,3,East,5);
        pat.climbStairs();
        
        
        pat.turnOff();
        
    }
    static
    {
        World.reset();
        World.setDelay(8);
        World.readWorld("StairWorld.kwld");
        World.setBeeperColor(.blue);
        World.setVisible(true);        
    }
}