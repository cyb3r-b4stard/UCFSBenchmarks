import java.util.Scanner;

public class First_Game
{ 
   public static void main (String [] args)
   {
    Scanner scan = new Scanner (System.in);
    String response;
    
  
    System.out.println("Hi! Welcome to Game X. It's only called 'X' because" +
    " I haven't come up with a name yet.\nPleasant, isn't it?");
    System.out.println("\n[PRESS ENTER]");
     
    response = scan.nextLine();
    boolean enterTF;
    
    if (response == "")
    { enterTF = false; 
      while (enterTF == false)
      {
      System.out.println("Hehe. Didn't I say to just click [ENTER]?");
      response = scan.nextLine();
     }
   }
   else
   { enterTF == true;
   }
    
   } 
    
    
    
    
    
}