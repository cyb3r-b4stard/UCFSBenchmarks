public class Clicker
{
    private int maximumAllowed;
    private int personCounter;
    private String name;
    private int personsInClub;
    
    public Clicker ()
    {
        maximumAllowed = 3;
        personCounter = 0;
        personsInClub = personsInClub + personCounter;
    }
    
    public void getName(String name)
    {
        personCounter++;
        System.out.println(name);
        
    }
    
    public void clear ()
    {
        personCounter = 0;
    }
    
    public int personCounter()
    {
        return personCounter;
    }
    
    public void personsInClub
    {
        System.out.println (personsInClub);
    }
    
}