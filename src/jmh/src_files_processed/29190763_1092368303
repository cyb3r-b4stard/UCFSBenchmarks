

public class salair {

    public static void main (String [] args) {
        
        final double TAUX_MAX = 17.35; 
        
        final double TAUX_MIN = 8.55;
        
        final double NBR_HR_MAX = 80;
        
        final double NBR_HR_MIN = 0;
        
        final double NBR_HR_NORMAL = 40;
        
        final double TEMPS_SUP = 1.5;
        
        final String MSG_SOL_TAUX_HORAIRE = "Entrez le taux horaire : ";
        
        final String MSG_SOL_NBR_HEURES = "Entrez le nombre d'heures travaillées : " 
                + "travaillées : ";
        
        final String MSG_ERR_TAUX_HORAIRE = "Erreur. Le taux horaire doit " + "se trouver entre " 
                + TAUX_MIN + "et " + TAUX_MAX + "inclusivement. \n";
        
        final String MSG_ERR_NBR_HEURES = "Erreur. Le nombre d'heures doit " + "se trouver entre "
                + NBR_HR_MIN + "et " + NBR_HR_MAX + "inclusivement.\n";
        
        final String MSG_PRESENTATION = "Ce logiciel permet de calculer le salaire \n" 
                + "hebdomadaire des employés d'une entreprise. \n\n\n\n";
                
        final String MSG_FIN = "\n\n\n\n\nFin normal du programme.";
        
        System.out.println (MSG_PRESENTATION);
        
        System.out.print(MSG_SOL_NBR_HEURES);
        nbrHeures = Clavier.lireDouble(); 
        
        while (nbrHeures != NBR_HR_MIN) {
            
            if (nbrHeures < NBR_HR_MIN || nbHeures > NBR_HR_MAX){
                System.out.print (MSG_ERR_NBR_HEURES);
                
            } else{ 
                
                System.out.print(MSG_SOL_TAUX_HORAIRE);
                tauxHoraire = Clavier.lireDouble();
                while (tauxHoraire < TAUX_MIN || tauxHoraire > TAUX_MAX) {
                    System.out.print(MSG_ERR_TAUX_HORAIRE);
                    System.out.println (MSG_SOL_TAUX_HORAIRE);
                    tauxHoraire = Clavier.lireDouble(); 
                }
                
                
                if (nbHeures <= NBR_HR_NORMAL); {
                    salaireHebdo = nbrHeures * tauxHoraire;
                } else { 
                    salaireHebdo = (nbHeures - NBR_HR_NORMAL)* tauxHoraire
                        *TEMPS_SUP + NBR_HR_NORMAL * tauxHoraire; 
                }
                
                System.out.prinln ("\nSalaire hebdomadaire : " + salaireHebdo
                        + "\n\n");
                        
                    }
                    
                    System.out.print (MSG_SOL_NBR_HEURES);
                    nbrHeures = CLavier.lireDOuble ();
                    
                }
                
                System.out.println(MSG_FIN);
                
            }
        }
        
        
                    
                    
                
               
        
        
}