public class Celular
{
    private int numeroCelular;
    private String compannia;
    private int valorPlan;
    private char activo;   
    private int cantidadMinutos;
    private int cantidadMensajes;
    
    public Celular(int numeroCelular, String compannia, int valorPlan, char activo, int cantidadMinutos, int cantidadMensajes){
        this.numeroCelular = numeroCelular;
        this.compannia = compannia;
        this.valorPlan = valorPlan;
        this.activo = activo;
        this.cantidadMinutos = cantidadMinutos;
        this.cantidadMensajes = cantidadMensajes;
    }
    
    public int planActivo(){
        if(activo=='A'){
            return (numeroCelular++valorPlan);
        }
    }
    
    public void aumentarMinutos(int x){
        cantidadMinutos = cantidadMinutos + x;
    }
    
    public void desactivarCelular(){
       
    }
    
    public int getNumeroCelular(){
        return numeroCelular;
    }
    
    public int getValorPlan(){
        return valorPlan;
    }
}