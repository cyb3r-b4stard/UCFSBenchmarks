import java.util.Scanner;
public class Expressions
{
public static void main (String [ ] args)
{
   Scanner scan = new Scanner (System.in) ;
   System.out.println (" Hello. Please enter three integers " );
   int integer1 = scan.nextInt();
   int integer2 = scan.nextInt();
   int integer3 = scan.nextInt();
   int maximumvalue =0  ; 
   if ( integer1 <= integer2 && integer2 <= integer3)
   maximumvalue = System.out.println ( "("integer1 + "+" + integer2")"+ "*" + integer3 );
   else if ( integer2 <= integer3 && integer3 <= integer1)
   maximumvalue = (integer2 + integer3) * integer1 ;
   else if  ( integer3 <= integer1 && integer1 <= integer2)
   maximumvalue = (integer3 + integer1) * integer2 ;
   else if  ( integer3 <= integer2 && integer2 <= integer1)
   maximumvalue = (integer3 + integer2) * integer1 ;
   else if  ( integer1 <= integer3 && integer3 <= integer2)
   maximumvalue = (integer1 + integer3) * integer2 ;
   else if  ( integer2 <= integer1 && integer1 <= integer3)
   maximumvalue = (integer2 + integer1) * integer3 ;
   System.out.println ( "The maximum value is obtained by the following expression: " 
   + maximumvalue );
   
  
} 
}  