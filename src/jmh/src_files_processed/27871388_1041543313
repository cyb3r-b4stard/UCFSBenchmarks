public class Auto
{
    double tank;
    double tankgroesse;
    double verbrauchAuf100;
    double strecke;
    public Auto(double benzinverbrauch, double tg)
    {
        verbrauchAuf100 = benzinverbrauch;
        tank = 0;
        tankgroesse = tg;
    }
    
    void tanken(double wieviel)
    {
        if (wieviel>0)
        tank = tank+ wieviel;
        if( tank >tankgroesse)
        { 
            tank = tankgroesse;
        }
    }
    
    void fahren(double s)
    {
        strecke = strecke + s;
        tank = tank - verbrauchAuf100/100*s
}