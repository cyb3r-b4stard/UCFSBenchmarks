import java.util.*;
public class Lab3
{
  Scanner scan=new Scanner(System.in);
  public char changeChar(char red, int hift)
  { 
      char green;
      int offset = ((red < ']') ? 65 : 97);
      if (red>='a'&& red<='z' || red>='A' && red<='Z') {
          int move = (red-offset+shift)%26;
          green = (char)(move + offset);
          return green;}
      else{ return red;}
  } 
  public String changeString (String red, int entShift)
  {
      int count = red.length();
      String green = "";
      for (int i=0; i<count; i++){
          char x = red.charAt(i);
          char y = changeChar(x, entShift);
          green = green + y;
      }
      return green;
  }   
  public string crypt ()
  {
      String red, green; 
      int shift;
      switch (select){
          case 1:   System.out.println("\fEnter a String");
                    String red = scan.next(); 
                    break;
          case 2:   System.out.println("Enter a shift");
                    int shift = scan.nextInt();   
                    break;
          case 3:   String green = changeString(red, shift);
                    System.out.println ("The string encoded is "+green)
          
          case 4:   String red = changeString(red, -1*shift; 
          
          case 5:   return false;
      }
  }
  public void init()
  {
      System.out.println("\f{"+changeChar('a',3)+"}");  
      System.out.println("{"+changeChar('d',26-3)+"}"); 
