public class Buch
{
    private String autor;
    private String titel;
    private int seiten;
    private String refNummer;
    private int ausgeliehen;

    /**
     * Constructor for objects of class Buch
     */
    public Buch(String autor, String titel, int seiten)
    {
        this.autor = autor;
        this.titel = titel;
        this.seiten = seiten;
        refNummer = "";
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public String gibAutor()
    {
       return autor;
    }
    
    public String gibTitel()
    {
       return titel;
    }
    
    public int gibSeiten()
    {
       return seiten; 
    }
    
    public String gibRefNummer()
    {
       return refNummer;
    }
   
    public void detailsAusgeben()
    {
       if (refNummer.length() > 0)
       {
           System.out.println("Titel: " + titel + "; Autor: " + autor + "; Seiten: " + seiten 
           + "; Referenznummer: " + refNummer + "; Ausgeliehen: " + ausgeliehen);
       }
       else
       {
           System.out.println("ZZZ");
       }
    }
    
    public void setzeRefNummer(String refNummerEingabe) 
    {
       if (refNummerEingabe.length() >= 3) 
       {
           this.refNummer = refNummer;
           gibRefNummer();
       }
       else
       {
           System.out.println("Die Eingabe muss l√§ngergleich als drei Zeichen sein.");
       }
    }
    
