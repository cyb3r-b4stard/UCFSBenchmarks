/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### ###### ########## 
 * @####### ##### ##, ####
 */
public class Student{
    private String name;
    private String id;
    private String school;
    private double gpa;
    private Course[] schedule;
    
 
      
    public Student(){
        name = "No Name";
        gpa = 0.0;
        id = "00123456";
        school = "Christopher Newport University";
        schedule = new Course[10];
    }
    
    public Student(String aName){
        this.name = aName;
        this.gpa = 0.0;
        this.id = "00123456";
        this.school = "Christopher Newport University";
    }
    
    public String getName(){
        return name;
    }
    
    public void setName(String n){
        name = n;
    }
    
    
    public String getID(){
        return id;
    }
    
    public void setID(String d){
        id = d;
    }
    
    public String getSchool(){
        return school;
    }
    
    public void setSchool(String s){
        school = s;
    }
    
    public double getGPA(){
        return gpa;
    }
    
    public void setGPA(double grade){
        gpa = grade;
    }
    
    public void setSchedule(Course[] c){
        schedule = c;
    }
    
    public boolean lessThan(Student other){
        
        if (this.gpa < other.gpa){
            return true;
        else
            return false;
        }
    }
    
    public String toString(){
        String toReturn = "";
        toReturn = "Student: " + name + 
                   "\nStudent ID: " + id +
                   "\nSchool: " + school +
                   "\nGPA: " + gpa;
        String myCourses = "Schedule; [";
         for (Course c : schedule){
            myCourses = myCourses + c + ", ";
        }
        myCourses += "]";
        return toReturn + myCourses;
    }
}