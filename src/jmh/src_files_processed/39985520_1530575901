 */
public class TextPlay extends WindowController implements ActionListener{
    private JTextField input;
    private JPanel textPanel;
    private Text text = null;
    private String infoRv = "Remove last text";
    private JButton removeButton = new JButton (infoRv);
    private JComboBox textFont = new JComboBox();
    private JSlider textSize;
    private int size;
    public void begin(){
       resize(500, 420);
       
       input = new JTextField("Enter Text");
       
       textPanel = new JPanel();
       add(input, BorderLayout.SOUTH);
       
       add(removeButton, BorderLayout.NORTH);
       removeButton.addActionListener (this);

       add(textFont, BorderLayout.WEST);
       textFont.addItem("Courier");
       textFont.addItem("Sand");
       textFont.addItem("Times");
       textFont.addItem("Zapfino");
       textFont.addActionListener(this);
       
       int sizeMin = 20;
       int sizeMax = 80;
       int sizeOri = 40;
       sizeSlider = new JSlider(JSlider.VERTICAL, sizeMin, sizeMax, sizeOri);
       add(textSize, BorderLayout.EAST);
       sizeSlider.addActionListener(this);
       
       
       validate(); 
    }
    public void onMouseClick(Location pt){
       text = new Text (input.getText(), pt, canvas);
    }
    public void actionPerformed (ActionEvent event){
       if (event.getSource() == removeButton){
       if (text != null){
          text.removeFromCanvas();
          text = null;
       }}else if (event.getSource() == textFont){
         String newFont = (String)textFont.getSelectedItem();
         text.setFont(newFont);
       } else {
         size = 
        }
    }
    public void setValue(int newVal){
    
    
    }
}