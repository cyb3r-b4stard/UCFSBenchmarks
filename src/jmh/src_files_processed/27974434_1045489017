import java.io.InputStreamReader;
import java.io.BufferedReader;
import java.math.*;
/**
* ####### ### ########### ## ## ##### ############### ####.
*
* @###### #### ######## 
* @####### %#%, %#%
*/
public class vectorBusqueda4
{
    public static InputStreamReader obj=new InputStreamReader(System.in);   
    public static BufferedReader br=new BufferedReader(obj);               
    public static int i, j, cont, longitud, indice, inferior, superior, centro; 
    public static double elemento, eliminar, aux, vBuscado;
    public static double[] vector;
    public static boolean vEncontrado;
    public static char repetir, auxRepetir;
    public static void main(String[] args) throws Exception
    {
        do 
        {
            elemento=0;
            indice=0;
            System.out.println("Ingrese la longitud del vector: ");
            do
            {
                longitud = Integer.parseInt(br.readLine());
                if(longitud<=0)
                {
                    System.out.println("La longitud debe ser mayor a "+longitud);
                }
            }while(longitud<=0); 
            vector = new double[longitud];
            for(i=0; i<=longitud-1; i++) 
            {
                System.out.println("Ingrese el "+(i+1)+" elemento: ");
                vector[i] = Double.parseDouble(br.readLine());
            }
            System.out.println("Vetor sin ordenar: ");
            for(i=0; i<=longitud-1; i++) 
            {
                System.out.print(vector[i]+"\t");
            }
            
            repetir='n';
            cont=0;
            do
            {
                if((repetir=='s' || repetir == 'S') && longitud>0) 
                {
                    eliminar=0;
                    System.out.println("\nIngrese el elemento a eliminar: ");
                    eliminar = Double.parseDouble(br.readLine());
                    for(i=0; i<=longitud-1; i++) 
                    {
                        if(vector[i] == eliminar)
                        {
                            indice = i;
                            longitud--;
                            for(i=indice; i<=longitud-1; i++) 
                            {                                
                                vector[i] = vector[i+1];
                            }
                        }
                    }
                }
                else
                {
                    System.out.println("\nNO EXISTEN ElEMENTOS PARA ELIMINAR. ");
                }
                
                
                if((longitud>0) && (cont<1)) 
                {
                    System.out.println("\nDesea eliminar un valor? S/N");
                    do 
                    {
                        if(repetir!='s' && repetir != 'S' && repetir!='n' && repetir != 'N')
                        {
                            System.out.println(repetir+"\no es correcto, ingrese S/N: ");
                        }
                        repetir = br.readLine().charAt(0);
                    }while(repetir!='s' && repetir != 'S' && repetir!='n' && repetir != 'N');
                }
                else if() 
                {
                    System.out.println("\nDesea buscar otro valor? S/N");
                    do 
                    {
                        repetir = br.readLine().charAt(0);
                        if(repetir!='s' && repetir != 'S' && repetir!='n' && repetir != 'N')
                        {
                            System.out.println("\""+repetir+"\" es incorrecto, ingrese S/N: ");
                        }
                    }while(repetir!='s' && repetir != 'S' && repetir!='n' && repetir != 'N');
                }
            }while((repetir=='s' || repetir == 'S')  && longitud > 0);
            repetir ='n';
            System.out.println("\nDesea crear otro vector? S/N");
            do 
            {
                repetir = br.readLine().charAt(0);
                if(repetir!='s' && repetir != 'S' && repetir!='n' && repetir != 'N')
                {
                    System.out.println("\""+repetir+"\" es incorrecto, ingrese S/N: ");
                }
            }while(repetir!='s' && repetir != 'S' && repetir!='n' && repetir != 'N');
        }while(repetir=='s' || repetir == 'S'); 
    }
}