import java.util.*;
class taxi_hire
{
public static void main()
{
Scanner key = new Scanner(System.in);
System.out.println("Enter kms travelled");
int km = next key.Int();
if(km > 0 && km <= 10)
{
System.out.println("your amount is " +km*30);
}
else if(km > 10 && km <= 30) 
{  
System.out.println("your amount is " +(km - 10)*20+10*30);
}
else if (km>30 && km<=70)
{
System.out.println("your amount is" +(km-30)*15+30*20 );
}
else
{
System.out.println("your amount is" +(km-70)*12);
}
}
}
      
