import java.awt.*;
import objectdraw.*;
/**
 * ##### # ########### ## ##### ############ ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class HotAirBalloon 
{
        private static final double CIRCLE_LEFT = 50;
        private static final double CIRCLE_TOP = 50;
        private static final double CIRCLE_LENGTH = 100;
        private static final double CIRCLE_WIDTH = 100;
        
        private static final double STRING1_TOP_X = CIRCLE_LEFT; 
        private static final double STRING1_TOP_Y = CIRCLE_TOP + CIRCLE_LENGTH/2;
        private static final double STRING1_BOTTOM_X = CIRCLE_LEFT + CIRCLE_LENGTH/4;
        private static final double STRING1_BOTTOM_Y = CIRCLE_TOP + CIRCLE_LENGTH*2;
        
        private static final double STRING2_TOP_X = CIRCLE_LEFT + CIRCLE_WIDTH; 
        private static final double STRING2_TOP_Y = CIRCLE_TOP + CIRCLE_LENGTH/2;
        private static final double STRING2_BOTTOM_X = CIRCLE_LEFT + CIRCLE_LENGTH*0.75;
        private static final double STRING2_BOTTOM_Y = CIRCLE_TOP + CIRCLE_WIDTH*2;
        
        private static final double BOX_TOP = CIRCLE_LEFT + CIRCLE_WIDTH/4; 
        private static final double BOX_LEFT = CIRCLE_TOP + CIRCLE_WIDTH*2; 
        private static final double BOX_LENGTH = CIRCLE_WIDTH/2;
        
        public FilledOval circle;
        public FilledRect basket;
        public Line stringOne;
        public Line stringTwo;
       
        
        public HotAirBalloon (DrawingCanvas balloonCanvas){
         
        RandomIntGenerator colorGen = new RandomIntGenerator (0, 255);
        int redness = colorGen.nextValue();
        int blueness = colorGen.nextValue();
        int greenness = colorGen.nextValue();
        
        circle = new FilledOval (CIRCLE_LEFT,CIRCLE_TOP,CIRCLE_LENGTH,CIRCLE_WIDTH, balloonCanvas);
        Color circleColor = new Color (redness, greenness, blueness);
        circle.setColor(circleColor);

        
        stringOne = new Line (STRING1_TOP_X, STRING1_TOP_Y, STRING1_BOTTOM_X, STRING1_BOTTOM_Y, balloonCanvas); 
        
        stringTwo = new Line (STRING2_TOP_X, STRING2_TOP_Y, STRING2_BOTTOM_X, STRING2_BOTTOM_Y, balloonCanvas);
        
        
        basket = new FilledRect (BOX_TOP, BOX_LEFT, BOX_LENGTH, BOX_LENGTH, balloonCanvas);
         
        }
        
       
        public boolean contains (Location point) {
             if (circle.contains(point)) {
                 return true;
                }
             
             if (basket.contains(point)) {
                 return true;
                }
             
            
            
              return false;
               
        }
         
        public void move (double dy)
    
        
        
}