 /* 
  * Placez vos methodes de tests ci-dessous.
  *
  * Pour vos tests, vous pouvez vous aider des exemples suivants:
  *
  * Une courte sequence d'ADN valide
  *  String shortADN= "gatcctccatatacaacggtatctccacctcaggtttagatctcaacaacggaaccattgccgacatgagac";
  *
  * Une longue sequence d'ADN valide    
  *  String longADN= "";
  * 
  * Un petit palindrome
  *  String palindrome1="ttaggatt";
  *
  * Un autre palindrome
  *  String palindrome2="catggcactttgagcattttagccgattttacgagtttaacggtac"; 
  *
  * Une chaine qui contient un palindrome
  *  String palADN=randomString(50,"atcg")+palindrome1+randomString(100,"atc");  
  *
  * Une chaine qui n'est pas une chaine ADN
  *  String invalidADN=longADN+"z"+shortADN;
  *
  */
     
 /*
  * Cette methode est utilisee pour creer palADN.
  * 
  * @pre l>0, s contient des caracteres tous differents
  * @post retourne une chaine de caractere de longueur l et composee de caracteres venant
  *       de la chaine s passee en parametre
  */
public static String randomString(int l, String s){
        Random r=new Random();
        StringBuffer str=new StringBuffer();
        for (int i=0;i<l;i++)
        {
            int n=r.nextInt(s.length());
            str.append(s.charAt(n));
        }
        return str.toString();
}
        
 /*

* @pre a est une variable de type String

* @post Retourne True si la séquence est un ADN valide et False si elle ne l'est pas

*/

public static boolean isADN(String a){

  int nombreLettres= a.length();

  for(int i = 0; i < nombreLettres ; i++){

      char lettre=a.charAt(i);
      
      if(lettre != 'a' && lettre != 'c'&& lettre != 't' && lettre != 'g'){return false;}

  }

    return true;

}

/*

* @pre /

* @post Teste la méthode isADN

*/

public static void testIsADN()

{
    
    String shortADN= "gatcctccatatacaacggtatctccacctcaggtttagatctcaacaacggaaccattgccgacatgagac";

    String longADN= "";

    String invalidADN=longADN + "z" + shortADN;

    if(!isADN(shortADN)){ System.out.println("Erreur1");}
        else{

            if(!isADN(longADN)){System.out.println("Erreur2");}
                else{

                    if(isADN(invalidADN)){System.out.println("Erreur3");}
                    else{System.out.println("Aucune erreur detectee");}

                }

            }

} 

public static int count(String a, char b){
    int count = 0;
    for(int i=0;i<s.length();i++){
    
        if (b=s.charAt(i)){
            count=count++;
        }
        return count;
    
    }
}

public static void testCount(){

    char b=a;
    String a="eeebcvgeebxv";
    String v="traerseeeendgd";
    String c ="aaartuen";
    int erreur = 0;

    if(count(a,b)!=0){
        erreur = erreur++;
        System.out.println("il y a"+erreur);
    }

    if(count(v,b)!=1){
        erreur = erreur++;
        System.out.println("il y a"+erreur);
    }

    if(count(c,b)!=2){
        erreur=erreur++;
        System.out.println("il y a"+erreur);
    }

    else{
    
        System.out.println("aucune erreur");
    }

}
    
public static int distanceH ( String a, String b){
        int distanceH=0;
        for (int i=0; i< a.length(); i++)
        {
            if ( a.charAt(i)!= b.charAt(i))
            {
                distanceH= distanceH+1;
            }
       
        }
        return distanceH;
}
    
public static void testDistanceH(){
        int erreur=0;
        String a= "gatcctccatatacaacggtatctccacctcaggtttagatctcaacaacggaaccattgccgacatgagac";
        String a1= "aatcctccatatacaacggtatctccacctcaggtttagatctcaacaacggaaccattgccgacatgagac";
        String aMid= "gatcctccatatacaacggtatctccacctcaggtttcgatctcaacaacggaaccattgccgacatgagac";
        String aEnd= "gatcctccatatacaacggtatctccacctcaggtttagatctcaacaacggaaccattgccgacatgagat";
        
        if ( distanceH( a, a1)!=1)
        { erreur= erreur+1;}
        if ( distanceH( a, aMid)!=1)
        { erreur= erreur+1;}
        if ( distanceH( a, aEnd)!=1)
        { erreur= erreur+1;}
        
       System.out.print( "Il y a " + erreur +" erreur(s)");
       
}
    
public static void main (String [] args){
        testDistanceH();
        testIsADN();
        testCount()
}
    
