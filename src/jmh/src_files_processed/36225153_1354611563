    public void use()
    {
        char choice;
        while((choice = readChoice()) != 'x')
        {
            switch (choice)
            {
                case 'a': addPerson(); break; 
                case 'r': removePerson(); break; 
                case 'p': showPeople(); break; 
                case 'c': callLift(); break; 
                case 'l': showLifts(); break; 
                case 'o': operate(); break; 
                default: help(); break;
            }
        }
    }

