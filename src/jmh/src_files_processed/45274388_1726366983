
public class Auto
{
   double kmStand;
   double tankinhalt;
   double km;
   double benzinverbrauch;
   
    public Auto(kmStsand, benzinverbrauch, tankinhalt)
    {
        kmStand = 100;
        

    }    
    
    public void fahren(double km)
        {
            kmStand += km;
            double benzinverbrauch = km * 7.3 /100;
           tankinhalt = tankinhalt - benzinverbrauch;
           this.km=km;
          this.benzinverbrauch=benzinverbrauch;
        }
    
        public void anzeigen()
    {
        System.out.printf("Kilometerstand = %10.2f\n",kmStand);
        System.out.println("FÃ¼r die gefahrenen Kilometer wurden "+benzinverbrauch +" Liter verbraucht");
        System.out.printf("Im Tank sind jetzt noch Liter = %10.2f\n" ,tankinhalt);
    }

    
}