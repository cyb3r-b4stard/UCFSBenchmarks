import java.util.Scanner;
public class Prueba_Calculadora  
{
  public static void main ( String args[]) 
  {
      Calculadora objeto=new Calculadora (); 
      Scanner muestra = new Scanner (System.in);  
      
      System.out.println("***Caluladora***");
      System.out.println("Suma de Números Enteros");
      System.out.println("Suma de Números Dobleos");
      System.out.println("Resta de Números Enteros");
      System.out.println("Resta de Números Dobles");
      System.out.println("Multpilicación de Números Enteros");
      System.out.println("Multiplicación de Números Dobles");
      int opc=muestra.nextInt();
      
      switch(
          case 1:
          System.out.println("***Suma de Números Enteros***");
          System.out.print("\nPrimer Numero:");
          int a=muestra.nextInt(); 
          System.out.print("Segundo Número:");
          int b=muestra.nextInt(); 
          System.out.println("\nEl resultado es:" + objeto.suma(a,b)); 
          break;
          
          case 2:
          System.out.println("\n***Suma de Números Dobles***");
          System.out.print("\nPrimer Numero:");
          double c=muestra.nextDouble();
          System.out.print("Segundo Número:");
          double d=muestra.nextDouble();
          System.out.println("\nEl resultado es:" + objeto.suma(c,d)); 
          break;
          
          case 3:
          System.out.println("\n***Resta de Números Enteros***");
          System.out.print("\nPrimer Numero:");
          a=muestra.nextInt();  
          System.out.print("Segundo Número:");
          b=muestra.nextInt(); 
          System.out.println("\nEl resultado es:" + objeto.resta(a,b)); 
          break;
      
          case 4:    
          System.out.println("***Resta de Números Dobles***");
          System.out.print("\nPrimer Numero:");
          c=muestra.nextDouble(); 
          System.out.print("Segundo Número:");
          d=muestra.nextDouble();  
          System.out.println("\nEl resultado es:" + objeto.resta(c,d)); 
          break;
          
          case 5:
          System.out.println("***Multiplicación de Números Enteros***");
          System.out.print("\nPrimer Numero:");
          c=muestra.nextInt(); 
          System.out.print("Segundo Número:");
          d=muestra.nextInt();  
          System.out.println("\nEl resultado es:" + objeto.resta(c,d)); 
          break;
      
          case 6:    
          System.out.println("***Multiplicación de Números Dobles***");
          System.out.print("\nPrimer Numero:");
          c=muestra.nextDouble(); 
          System.out.print("Segundo Número:");
          d=muestra.nextDouble();  
          System.out.println("\nEl resultado es:" + objeto.resta(c,d)); 
          break;
          )
    }
  }
}
    