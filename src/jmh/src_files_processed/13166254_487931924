 */
public class Library
{
    private ArrayList <Member> member;
    private ArrayList <String> book;
    int addMemberShipID;
    /**
     * Constructor for objects of class Library
     */
    public Library()
    {
        member = new ArrayList<Member>();
        book = new ArrayList<String>();
        MembershipID=1;
    }

  public int numberofMember()
  
{
   return member.size();
}
    
public void addMember(String addName, String addLastName, String addContactNumber)
{
    member.add(new Member(addName, addLastName, addContactNumber, addMemberShipID));
    addMemberShipID++;
}

public void addBook(String addBookTitle, String addBookAuthor, int addIdentityNumber, boolean addBookType)
{
    book.add(new Book(String addBookTitle, String addBookAuthor, int addIdentityNumber, boolean addBookType));
    addMemberShipID++;
}


public void showMember(){
int index = 0;
while(index <member.size()){
System.out.println(member.get(index));
index ++;
}

}
public int numberofBook(){    
return book.size();
}
public void showBook(){
int index = 0;
while (index <book.size())
System.out.println(book.get(index));
index ++;
}
}










