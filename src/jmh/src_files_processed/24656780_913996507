import comp102x.IO;

public class Lab02
{
    
    public static void multiply()
    {
        int PricePerApple = 6;
        int Apple;
        int TotalPrice;
        
            IO.output("How many apples do you want?");
            Apple = IO.inputInteger();
            TotalPrice = Apple * PricePerApple;
            IO.outputln("The total price is: " + TotalPrice);
        
         }
    
    public static void calculateTriangleArea()
    {
        double height;
        double base;
        double AreaOfTriangle;
        
         IO.output("What is the height of the triangle?");
         height = IO.inputDouble();
         IO.output("What is the base of the triangle?");
         base = IO.inputDouble();
         
         AreaOfTriangle = 1/2*(base*height);
         
         IO.output("The area of the triangle is: " + AreaOfTriangle);
        
        
  }
    
    public static void solveQuadraticEquation()
    {
        int a;
        int b;
        int c;
        double Answer;
        
        IO.output.("Quadratic equation, ax2+bx+c = 0, input a value for a")
        a = IO.inputInteger();
        IO.output.("Quadratic equation, ax2+bx+c = 0, input a value for b")
        b = IO.inputInteger();
        IO.output.("Quadratic equation, ax2+bx+c = 0, input a value for c")
        c = IO.inputInteger();
        
        double top = Math.sqrt(b * b - 4 * a * c);
        double root1 = ( -b + top) / 2 * a;
        double root2 = (-b - top) / 2 * a;
        
        IO.outputln("The value of x is" + root1 "and" + root2);
        
        
        
    
       
        
        
        
        
        
    }
}