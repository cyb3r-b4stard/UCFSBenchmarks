import java.util.GregorianCalendar;
import java.util.Scanner;

public class ContaPrazo
{
    private String numer;
    private String nome;
    private GregorianCalendar op, agora;
    private double money, juro;
    
    public ContaPrazo (String numer, String nome, GregorianCalendar op, double money, GregorianCalendar agora, double juro)
    {
        this.numer = numer;
        this.nome = nome;
        this.op = op;
        this.money = money;
        this.agora = agora;
        this.juro = juro;
    }
    
    public ContaPrazo ( ContaPrazo c)
    {
        this.numer = c.getNumer();
        this.nome = c.getNome();
        this.op = c.getOp();
        this.money = c.getMoney();
        this.agora = c.getAgora();
        this.juro = c.getJuro();
    }
    
    public ContaPrazo ()
    {
    this.numer = "";
    this.nome = "";
    this.op = new GregorianCalendar();
    this.money = 0;
    this.agora = new GregorianCalendar();
    this.juro = 0 ;
   }
    
    public String getNumer() {return numer;}
    public String getNome () {return nome;}
    public GregorianCalendar getOp () {return op;}
    public double getMoney() {return money;}
    public GregorianCalendar getAgora() {return agora;}
    public double getJuro() {return juro;}
    
    public int diasPassados()
    {
       Scanner ler = new Scanner (System.in);
     
       this.op = new GregorianCalendar(ano,mes,dia);
       ano = this.agora.get(agora.YEAR);
       mes = this.agora.get.(agora.MONTH);
       dia = this.agora.get.(agota.DAY_OF_MONTH);
       
       this.agora = new GregorianCalendar();
        
       long ms = (agora.getTimeInMillis()-op.getTimeInMillis())/1000/60/60/24;

       return (int) ms;
    }
}