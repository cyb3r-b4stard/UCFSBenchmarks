package nz.ac.aut.programming1.homework5;

import static nz.ac.aut.programming1.homework5.Methods.*;

public class Q10 {
    boolean isWorldCreated = false;
    
    boolean isProgramRunning = true;
    void turnRobotRight(){
        turnRobotLeft();
        turnRobotLeft();
        turnRobotLeft();
    }
    void moveBackwards(){
        turnRobotLeft();
        turnRobotLeft();
        moveRobotForwards();
        turnRobotLeft();
        turnRobotLeft();
    }
void robotControlProgram(){
while(isProgramRunning = true){
String input2 = readLine();
println("What would you like to do?");
print("<!");
String userAnswer2 = readLine();
if(stringEquals(userAnswer2, "w")){
    isWorldCreated = true;
    createRobotWorld();
}
else{
    println("Must Create World");
}
while(isWorldCreated = true){
    String input = readLine();
println("What would you like to do?");
print("<");
String userAnswer = readLine();
if(stringEquals(userAnswer, "r")) {     
    turnRobotRight();
}
if(stringEquals(userAnswer, "f")) {
    
    moveRobotForwards();

}
if(stringEquals(userAnswer, "l")) {
         turnRobotLeft();
}
if(stringEquals(userAnswer, "c")) {
    if(isWorldCreated = true){
    createRobot();
}
if(stringEquals(userAnswer, "b")) { 
    moveBackwards()
}
if(stringEquals(userAnswer, "k")) {            
      killRobot();
    }
if(stringEquals(userAnswer, "a")) {
    turnRobotLeft();
    turnRobotLeft();
} 
if(stringEquals(userAnswer, "h")) {
    println("W = Create a new robot world");
    println("C = Create a new robot in the most recently created robot world");
    println("F = Move the most recently created robot forwards");
    println("B = Move the most recently created robot backwards (but still finish facing in the same direction");
    println("L = Turn the most recently created robot left");
    println("R = Turn the most recently created robot right");
    println("A = Turn the most recently created robot around, so that it is facing the opposite direction");
    println("K = Kill the most recently created robot");
    println("Q = Quit the program");
    println("H = Print a help message listing these commands and what they do");
} 
}
}
}
}
}