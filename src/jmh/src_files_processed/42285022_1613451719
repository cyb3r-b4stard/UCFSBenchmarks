import Prog1Tools.*;
import java.awt.*;
import javax.swing.*;

public class prototyp
{
    public prototyp()
    {
        JFrame frame = new JFrame("Der kleine Belohner");
        frame.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
        frame.setPreferredSize(new Dimension(900, 650));
        
        JPanel panel1 = new JPanel();                
        JPanel panel2 = new JPanel();
        JPanel panel3 = new JPanel();
        JPanel panel4 = new JPanel();
        
        JLabel titel = new JLabel("Titel");
        panel1.add(titel);
        panel1.add(panel2);       
        panel2.add(panel3);
        panel2.add(panel4);
        
        
        JLabel lideau = new JLabel("Liste der Aufgaben: ");        
        JButton aufgabeAdden = new JButton("+");
        
        panel1.setLayout(new BoxLayout(panel1, BoxLayout.PAGE_AXIS));
        panel2.setLayout(new FlowLayout());
        panel3.setLayout(new BoxLayout(, BoxLayout.PAGE_AXIS));
        panel4.setLayout(new BoxLayout(panel1, BoxLayout.PAGE_AXIS));
        
        
        
        panel3.add(lideau);
        panel3.add(aufgabeAdden);
        frame.add(panel1);
        frame.pack();
        frame.setVisible(true);
    }
}