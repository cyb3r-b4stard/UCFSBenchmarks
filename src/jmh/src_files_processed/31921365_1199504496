 */
import java.util.Scanner;

public class RockPaperScissors
{
    public static void main (String[]args)
     {
        String userResponse;
        String userResponse2;
        int gamelimit;
        String Rock;
        String Paper;
        String Scissors;
        int userPoints;
        int computerPoints;
        Scanner myConsole = new Scanner(System.in);
        System.out.println ("Do you want to play rock, paper, scissors? (Yes/No)");
        userResponse = myConsole.nextLine();
        int RPS = (int) (Math.random() * 3);
        boolean run = true;
        
        if (userResponse.equalsIgnoreCase("No"))
            {
                System.out.println("Ok, Bye");
            }
            else
            {
                System.out.println("Ok, lets play!");
            } 
        System.out.println("How many times do you want to play?");
        gamelimit = myConsole.nextInt();
        
        while(run)
        {
            System.out.println("       ");
            System.out.println("Rock, Paper or Scissors?...");
            userResponse2 = myConsole.nextLine();
            
            if ((userResponse2.equalsIgnoreCase("Rock"))&&(RPS == 1))
            {
                System.out.println("Tie. I chose rock.");  
            }
            if ((userResponse2.equalsIgnoreCase("Rock"))&&(RPS == 2))
            {
                System.out.println("You lose. I chose paper.");
                computerPoints =+ 1;
            }
            if ((userResponse2.equalsIgnoreCase("Rock"))&&(RPS == 3))
            {
                System.out.println("You win! I chose scissors.");
                userPoints =+ 1;
            }
            
            if ((userResponse2.equalsIgnoreCase("Paper"))&&(RPS == 1))
            {
                System.out.println("You win! I chose rock.");
                userPoints =+ 1;
            }
            if ((userResponse2.equalsIgnoreCase("Paper"))&&(RPS == 2))
            {
                System.out.println("Tie. We both chose paper.");  
            }
            if ((userResponse2.equalsIgnoreCase("Paper"))&&(RPS == 3))
            {
                System.out.println("You lose. I chose scissors.");
                computerPoints =+ 1;
            }
            
            if ((userResponse2.equalsIgnoreCase("Scissors"))&&(RPS == 1))
            {
                System.out.println("You lose. I chose rock.");
                computerPoints =+ 1;
            }
            if ((userResponse2.equalsIgnoreCase("Scissors"))&&(RPS == 2))
            {
                System.out.println("You win! I chose paper.");
                userPoints =+ 1;
            }
            if ((userResponse2.equalsIgnoreCase("Scissors"))&&(RPS == 3))
            {
                System.out.println("Tie. I chose scissors.");  
            }
            
            if (gamelimit == (userPoints =+ computerPoints))
            {
                System.out.println("You got " + userPoints + " points!");
                System.out.println("I got " + computerPoints + " points!");
                if (computerPoints >= userPoints) 
                {
                    System.out.println ("I won! Good game.")
                }
                if (userPoints >= computerPoints) 
                {
                    System.out.println ("You won! Good game.")
                }
            }
        }
    }
}