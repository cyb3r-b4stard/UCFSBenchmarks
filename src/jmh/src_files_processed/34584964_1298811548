import java.net.*;
import java.io.*;

public class Client
{
    private Socket ts;
    private ObjectInputStream in;
    private ObjectOutputStream out;   
    
    public void verbinden()
    {
        try
        {
            ts = new Socket("10.0.206.20", 11119);
            out = new ObjectOutputStream(ts.getOutputStream());
            in = new ObjectInputStream(ts.getInputStream());
        }
        
        catch(Exception e)
        {
            System.out.println(e);
        }
    }
    public void senden(String e)
    {
        
    }
    public void empfangen()
    {
       while (true)
       {
           system.out.println(in.sendObject();
           in.readObject();
       }
    }
}   

