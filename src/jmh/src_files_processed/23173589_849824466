import java.util.Scanner;

public class CountingPositiveNegative
{
    public static void main(String[]args)
    {
        int num = 0;
        int pos = 0;
        int neg = 0;
        int count = 0;
        int total = 0;
        double ave = 0;
        
       while (num != 0)
       {
            String strnum = jOptionPane.showInputDialog("Enter Number Input "0" to exit");
            num = Integer.parseInt(strnum);
            
            if(num<0 || num>0)
            {
                count++;
            if(num >0)
                pos++;
            else if(0<num)
           
            neg++
            
            count = count + num;
            count++
        }
         String strOutput = "The number of positives is  " + pos;
            JOptionPane.showMessageDialog(null, strOutput);
            strOutput = "The number of negatives is  " + neg;
            JOptionPane.showMessageDialog(null, strOutput);
            strOutput = "The number of total is " + count ;
            JOptionPane.showMessageDialog(null, strOutput);
            strOutput = "The number of average is " + count/num ;
            JOptionPane.showMessageDialog(null, strOutput);
       }
            