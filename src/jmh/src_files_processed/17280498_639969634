    public static final int MAX_OPERATION = 3;
    public static final int MIN_OPERATION = 1;
    public static final int MAX_TRANS = 3;
    public static final int MIN_TRANS = 1;
    public static final int MAX_LONGEUR = 32;
    public static final int MIN_LONGEUR = 3;
    public static final int MAX_ANALYSE = 2;
    public static final int MIN_ANALISE = 1;
    public static final String MSG_CHAINE = "Entrez la chaine a analyser : ";
    
    public static void presentationLogiciele(){
        System.out.println("Cet petote programme sert a manipuler des Strings");
