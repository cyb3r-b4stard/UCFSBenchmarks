    public static String chnagerMajuscules(String s){
        String chaine = "";
        int position;
        for(int i =0; i<s.length();i++){
            if(s.charAt(i) == 'A'){
                chaine = "@"+ (s.charAt(i) =((char)('A'+1))+"@";
            }
        }
        return chaine;
    }
    
    public static int saisirEtValiderChoix(int min, int max){
        int rep;
        rep = Clavier.lireInt();
        while(rep <min || rep > max){
            System.out.println("Erreur!!! les valeur valide doit etre entre : "+min+" et "+max+" inclusivement");
            System.out.println("Entrez un veleur valide");
            rep = Clavier.lireInt();
        }
        return rep;
    }
    
    public static String SaisirEtValiderChaine(String msg, int min, int max){
        String chaineValide;
        chaineValide = Clavier.lireString();
        while(chaineValide.length() <MIN_LONGEUR || chaineValide.length() > MAX_LONGEUR){
            System.out.println("Erreur!! la longeur de la chaine doit etre etre "+MIN_LONGEUR +" et" + MAX_LONGEUR);
            System.out.print("Entrez une chaine valide : ");
            chaineValide = Clavier.lireString();
        }
        return chaineValide;
    }

    public static boolean estMajuscule(char c){
        boolean mayus = false;
        if(c >= 'A' && c <= 'Z'){
            mayus = true;
        }
        return mayus;
    }

    public static boolean estMinuscule(char c){
        boolean minus = false;
        if(estMajuscule(c)== false){
            minus = true;
        }
        return minus;
    }

    public static boolean estVoyelle (char c){
        boolean voyelle = false;
        if(Character.toLowerCase(c)=='a'||Character.toLowerCase(c)=='e'
           ||Character.toLowerCase(c)=='i'||Character.toLowerCase(c)=='o'
           ||Character.toLowerCase(c)=='u'){
               voyelle = true;
        }
        return voyelle;
    }

    public static boolean estConsonne (char c){
        boolean consonne = false;
        if(estVoyelle(c) == false){
            consonne = true;
        }
        return consonne;
    }

        
    public static void main (String[] params) {
        String c;
        System.out.print("entra un chaine : ");
        
        System.out.println(SaisirEtValiderChaine (MSG_CHAINE, MIN_LONGEUR,MAX_LONGEUR )); 
        
    } 

} 
