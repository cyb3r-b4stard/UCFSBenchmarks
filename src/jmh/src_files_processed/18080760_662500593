
/**
 * ##### # ########### ## ##### ########## ####.
 * 
 * @###### ####### ######### ######## 
 * @####### ##/##/####
 */
public class OtraMatriz
{
    private int [] [] matriz;
    private int renglon;
    private int columna;
    
    public OtraMatriz()
    {
        this.renglon=2;
        this.columna=2;
        this.matriz = new int [this.renglon] [this.columna];
    }
    
    public OtraMatriz( int renglon, int columna)
    {
        this.renglon=renglon;
        this.columna=columna;
        this.matriz = new int [this.renglon] [this.columna];
    }
    
    public void imprime(String titulo)
    {
        System.out.println("------"+ titulo +"------");
        for(int r=0; r<this.renglon; r++)
        {
            for (int c=0; c<this.columna; c++)
            {
                System.out.print(" \t "+this.matriz [r][c] +" ");
            }
            System.out.print("\n");
        }
    }
    
    public boolean setElemento (int renglon,int columna, int valor)
    {
        if ((0<=renglon && renglon < this.renglon) && (0<=columna && columna < this.columna))
        {
            this.matriz [renglon][columna] = valor;
            return true;
        }
        else 
        {
            return false;
        }
    }
    
    public int getElemento (int renglon, int columna)
    {
        return this.matriz [renglon] [columna];
        
    }
    
    public void suma(OtraMatriz B)
    {
        for (int r=0; r<this.renglon; r++)
        {
            for (int c=0; c<this.columna; c++)
            {
                this.matriz[r][c]=this.matriz[r][c]+B.getElemento(r,c);
            }
        }
    }
    
    public OtraMatriz resta (OtraMatriz B)
    {
        OtraMatriz M = new OtraMatriz();
        for(int r=0; r<this.renglon; r++)
        {
            for (int c=0; c<this.columna; c++)
            {
                M.setElemento(r,c,(this.matriz[r][c] - B.getElemento(r,c)));
            }
        }
        return M;
    }
    
    public OtraMatriz transponer ()
    {
     OtraMatriz M =new OtraMatriz (this.columna, this.renglon);
     for(int r=0; r<this.renglon ;r++)
     {
            for (int c=0; c<this.columna; c++)
            {
                M.setElemento(c,r,this.matriz[r][c]); 
            }
     }
     return M;
    }
    
    public void multiplicasion(OtraMatrizB)
    {
        for (int r=0; r<this.renglon - 1 ; r++)
        {
            for (int c=0; c<this.columna - 1; c++)
            {
                this.matriz[r][c]=this.matriz[r] * OtraMatrizB (c);
            }
        }
    }
    
    
    
}