 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Summenberechnung
{
    public static void main(String[]arg)
    {
        int summe = 0;
        int a=20;
   
        for(int i=2;i<=a;i+2)
        {
            summe+=i;
        }
        System.out.println("Die Summe lautet"+summe);
    }
    
  
}
