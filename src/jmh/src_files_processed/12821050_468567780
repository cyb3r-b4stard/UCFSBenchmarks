
import java.util.Scanner;

public class StringFun
{


public static void main (String [] args)
{
	String mySchool = "Xavier College Preparatory";
	String myMascot = "Gators";
	String mutation1, mutation2, mutation3, mutation4;

	System.out.println("Original string:  \"" + mySchool +"\"");
	System.out.println("has a length of:  " + mySchool.length ());    
	System.out.println("The g in college is in position:" + mySchool.indexOf("g"));  
	
	/*  Calculate the following mutations:
		mutation1 - concatenate mySchool with myMascot
		mutation2 - use the substring method to set mutation2 to just College 
		mutation3 - use substring and concatenation (of an "e")to set mutation3 to Prepare */
mutation1 = mySchool + " " + myMascot;
mutation2 = mySchool.substring (7, 14);
mutation3 = mySchool.substring (15, 21) + "e";
mutation4 = myMascot.substring(0,1) + mySchool.substring(8,9) + mySchool.substring(0,1) + mySchool.substring(7,8) + mySchool.substring(15,16);


	/*  Print each of the following with an appropriate label
		mutation1
		mutation2
		mutation3
		the length of mutation1   */
System.out.println("mutation1 is " + mutation1); 
System.out.println("mutation2 is " + mutation2); 
System.out.println("mutation3 is" + mutation3); 
System.out.println("mutation4 is" + mutation4);

System.out.println("What is your GPA? ");
