package SegmentoPunto;
public class Segmento
{
    private Punto puntoiniziale;
    private int lunghezza;
    private Punto vd;
    public Segmento(Punto Left,int lung)
    {
        puntoiniziale=Left;
        lunghezza=lung;
        Punto puntofinale=new Punto(Left.get_x()+lunghezza,Left.get_y());
        vd=puntofinale;
    }
    public Segmento(int lung)
    {
        Punto puntofinale=new Punto(0,0);
        vd=puntofinale;
        lunghezza=lung;
        if(lunghezza>0)
        {
           
            Punto puntoiniziale1=new Punto(-(lung),0);
            puntoiniziale=puntoiniziale1;

        }
        else
        {
            lunghezza=1;
            Punto puntoiniziale1=new Punto(lung,0);
            puntoiniziale=puntoiniziale1;
  
        }
    }
    public Segmento(Punto Left, Punto Right)
    {
      
        if(Left.get_y()==Right.get_y())
        {
            if (Left.get_x()<=Right.get_x())
            {
                lunghezza=Right.get_x()-Left.get_x();
                Punto puntofinale=new Punto(Right.get_x(),Right.get_y());
                puntoiniziale=Left;
                puntofinale=Right;
                vd=puntofinale;
            }
            else
            {
                lunghezza=Left.get_x()-Right.get_x();
                puntoiniziale=Right;
                Punto puntofinale=new Punto(Left.get_x(),Left.get_y());
                puntofinale=Left;
                vd=puntofinale;
            }
        }
        else
        {
            puntoiniziale=Left;
            lunghezza=1;
            
        }
    }
    public void verifica(segmento a,segmento c)
    {
        if(a.segmento.get_Left()==c.segmento.get_Left()
        {
            System.out.print("SONO UGUALI!");
        }
        else
        {
            System.out.print("NON SONO UGUALI!");
        }
    }
    public Punto get_Left()
    {
        return puntoiniziale;
    }
    public Punto get_Right()
    {
        return vd;
    }
    public int get_Lenght()
    {
        return lunghezza;
    }
    public String toString()
    {
     return "Segmento:[("+puntoiniziale.get_x()+","+puntoiniziale.get_y()+")"+","+lunghezza+"] ";
    }
    public Boolean inclusoIn(Segmento s)
    {
        if(s.puntoiniziale.get_y()==puntoiniziale.get_y() && s.puntoiniziale.get_x()>= puntoiniziale.get_x() && s.puntoiniziale.get_x() <= vd.get_x() && s.vd.get_x()>= vd.get_x() && s.vd.get_x() >= puntoiniziale.get_x() && s.vd.get_x()<= vd.get_x())
        {
            return true;
        }
        else
        {
            return false;
        }
}
}