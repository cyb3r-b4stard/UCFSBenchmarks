        Scanner no= new Scanner(System.in);
        Scanner dec=new Scanner(System.in);
        System.out.println("\n\n\n Eenter a text  ");
        String str = text .nextLine();
        System.out.println("\n Enter your age; ");
        int age1= no.nextInt();
        System.out.println("\n\n\n\n\n\nEnter a decimal value ");
        double Float= dec.nextDouble();
        Scanner age= new Scanner(System.in);
       System.out.println(" enter your age "+age);
       int a= age.nextInt(); 
       if (a<18)
       {
           System.out.println(" your are not eligable for voing.");
                       
               else System.out.println("you are eligable for voting");
            }}        
        System.out.println("you entered is "+str);
        System.out.println("your age is "+age1);
        System.out.println("entered decimal value is "+Float);
