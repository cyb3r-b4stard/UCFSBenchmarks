/**
 * ###### ### #### ## ####### ## #### #####, ###### ## ############.
 * 
 * @###### (#### #########) 
 * @####### (#.#   ####-##-##)
 * ####### ##   ###
 */
public class Books extends Publications {
    private String author;
    private int[] chapter;

    /**
     * Costruttore completo dell'oggetto Books
     * @param autore, capitoli, titolo e codice ISBN
     * @return null
     */
    public Books(String author, int[] chapter, String title, String ISBNcode) {
        super(title, ISBNcode);
        setAuthor(author);
        setChapter(chapter);
    }
    
    /**
     * Metodo che ritorna l'autore del libro
     * @param null
     * @return autore, String
     */
    public String getAuthor() {
        return this.author;
    }
    
    /**
     * Metodo che cambia l'autore del libro
     * @param autore del libro
     * @return void
     */
    public void setAuthor(String author) {
        this.author = author;
    }
    
    /**
     * Metodo che ritorna i capitoli del libro
     * @param null
     * @return capitoli, ArrayList
     */
    public int[] getChapter() {
        return this.chapter;
    }
    
    /**
     * Metodo che cambia i capitoli del libro
     * @param capitoli del libro
     * @return void
     */
    public void setChapter(int[] chapter) {
        this.chapter = chapter;
    }
    
    /**
     * Metodo che aggiunge un capitolo al libro
     * @param nuovo capitolo del libro
     * @return void
     */
    public void addChapter() {
        int a = this.chapter[chapter.length - 1];
        chapter[chapter.length];
    }
    
    /**
     * Metodo che ritorna la situazione attuale del libro
     * @param null
     * @return tutti i parametri del libro
     */
    public String toString() {
        return "Author: " + this.author + ", Chapter:" + this.chapter + ", Title: " + super.title + ", ISBN: " + super.ISBNcode;
    }
}
