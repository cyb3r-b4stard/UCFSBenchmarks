    int pos = msg.indexOf("w");  
   int counter = 0;
   if (pos != -1)   
   System.out.println("We have a \"w\"");
   while (pos != -1)  {    
       
        pos = msg.indexOf("w", (pos +1));   
        counter ++;}  
    System.out.println("There are " + counter + "\"w's\"");
    
    System.out.println("There are " + msg.length() + " characters"); 
    System.out.println(msg);
    msg = msg.replace("w", "h");
    System.out.println(msg);
   
    String str = "The weather is cold outside";
    
