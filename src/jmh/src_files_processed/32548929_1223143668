import java.util.Scanner;
import java.lang.Math;
import java.io.*;

class Area
{
    public static void main(String[] args)
    {
        char ans = 'y';
        do
        {
            Scanner scan = new Scanner(System.in);
            
            System.out.println("Choose figure: ");
            System.out.println("1) Triangle");
            System.out.println("2) Rectangle");
            System.out.println("3) Square");
            int choice = scan.nextInt();
            
            if (choice == 1) {
                System.out.println("Enter side 1: ");
                double aT = scan.nextDouble();
                System.out.println("Enter side 2: ");
                double bT = scan.nextDouble();
                System.out.println("Enter side 3: ");
                double cT = scan.nextDouble();
                double s = (aT + bT + cT)/2;
                System.out.println("s = " + s);
                double x = ((s) * (s-aT) * (s-bT) * (s-cT));
                double Area = Math.sqrt(x);
                System.out
            }
            else if (choice == 2) {
                System.out.println("Enter side 1: ");
                double aR = scan.nextDouble();
                System.out.println("Enter side 2: ");
                double bR = scan.nextDouble();
                double AreaOfRectangle = aR * bR;
                System.out.println("The area is, " + AreaOfRectangle);
            }
            else if (choice == 3) {
               System.out.println("Enter side of square: ");
               double aS = scan.nextDouble();
               double AreaOfSquare = Math.pow(aS,2);
               System.out.println("The area is, " + AreaOfSquare);
            }
            else {
                System.out.println("Invalid option");
            }
            
            System.out.println("Do you want to use the program again (y) ? ");
            ans = (scan.next()).charAt(0);
        } while (ans == 'y' || ans == 'Y');
    }
}

           
        
        
        
        
        
     










