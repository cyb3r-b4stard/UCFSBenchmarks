 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Rectangle
{
    
    int width,height,x,y,visible;
    Color color;

    /**
     * Constructor for objects of class Rectangle
     */
    public Rectangle(int width, int height, int x, int y, Color color)
    {
        visible=false;
    }
    
    public int show(){
        visible=true;
        draw(Color color);  
    }
    
    public int hide(){
        visible=false;       
    }
    
    boolean isVisible(){
        color=Canvas.getBackgroundColor();
        draw(Color color);
        return visible;        
    }
    
    void draw(Color color){
        if (isVisible()){
            Canvas.setColoro(color);
            for (int i=0; i<width; i++) {
                for (int i=0; i<width; i++) {
                    Canvas.drawPixel(x+i,y+j);
                }
            }
        }
    }
}