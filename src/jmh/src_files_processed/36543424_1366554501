import javax.swing.*;

public class PresentacionArea
{
    private Area rArea = new Area ();
    
    public PresentacionArea ()
    {
    }
    
    public void ingresarDatos ()
    {
        rArea.setNumH(Integer.parseDouble(JOptionPane.showInputDialog(null, "Ingresa la altura del triangulo" )));
        rArea.setNumB(Integer.parseDouble(JOptionPane.showInputDialog(null, "Ingresa la base del triangulo" )));
       
        rArea.calculo();
    }
    public void mostrarDatos ()
    {
        JOptionPane.showMessageDialog(
              null, "La altura es:" +rArea.getNumH()+"\n"+
                    "La base es:" +rArea.getNumB()+"\n"+ 
                    "El area es:" +rArea.getCalculo ()+"\n"+);
    }
    
}