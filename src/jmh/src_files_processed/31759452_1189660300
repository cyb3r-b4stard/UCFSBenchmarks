class Spinner
{
    double numberOfSegments;
    String colourOne;
    String colourTwo;
    Spinner( double theNumberOfSegments,String theColourOne,String theColourTwo)
    {
       numberOfSegments  = theNumberOfSegments;
       colourOne = theColourOne;
       colourTwo  = theColourTwo;
    }    
    void displayColour()
    {
        System.out.println("My colour is" + colourOne + "My colour is" + colourTwo);
    }    
    void spin()
    {
        System.out.println(Math.round(double)*numberOfSegments);
        
    }    
}  