import java.util.Scanner;
public class Project7B
{
   int number =0;
   
    public static void displayHeader(String d, double m, double cpg)
    {
        System.out.println();
        System.out.println("============================================================");
        System.out.println("           Vehicle MPG Chart ");
        
        System.out.println();
        System.out.printf("%14s %7s %15s %8s %11s", "Vehicle","#Miles","#Gallons", "MPG" );
        System.out.println("\n============================================================");
    }
    
    public static void displayCarData(String model, double mpg, double gn, double c)
    {
        System.out.printf("\n%14s %7.2f %11.2f %11.2f %11.2f", model, mpg, gn, c, (c*2));        
    }  
    
   
    
    public static String getString(String s)    
    {
        Scanner stdIn = new Scanner (System.in);
        System.out.print(s);
        return stdIn.nextLine().trim();
    }

    public static double milesPerGallon (double miles, double gallons)
    {
        return (miles/gallons);     
    }
    
    public static void main (String [] args)
    {
       
       
       Scanner keybaord = new Scanner(System.in);
      
       String name = getString("Enter the user's name: "); 
       if (name<0)
       { 
           System.out.println"You entered an empty string. Please try again.");
        }
       String model1 = getString ("\nEnter the first car model: ");
      
       String miles1 = getString("Enter the miles driven: "); 
      
       String gallonsused1 = getString("Enter the number of gallons used: ");
       
       String model2 = getString("Enter the second car model: "); 
       
       String miles2 = getString("Enter the miles driven ");
       
       String gallonsused2 = getString("Enter the number of gallons used: "); 
     
       
        System.out.println();
        System.out.println("============================================================");
        System.out.println("            Vehicle MPG Chart");
        System.out.println("    Vehicle   #Miles #Gallons    MPG");
        System.out.println("============================================================");
        System.out.println("    "+model1+"   "+miles1+"      "+gallonsused1+"    ");
        System.out.println("    "+model2+"   "+miles2+"      "+gallonsused2+"    ");
        
        

        System.out.println();
        
    }
}