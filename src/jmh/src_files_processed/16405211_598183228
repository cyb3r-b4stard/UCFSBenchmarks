import javax.swing.JOptionPane;


public class BeatThat{
    public static void main(String args[]){
        String name;
        
        JOptionPane.showMessageDialog(null, "Hello! welcome to \n   BEAT THAT!");
        
        name = JOptionPane.showInputDialog("Please enter the computer's Name.");
        PCPlayer computer = new PCPlayer(name);
        
        name = JOptionPane.showInputDialog("Thank you, now enter your name.");        
        HumanPlayer player = new HumanPlayer(name);
        
        JOptionPane.showMessageDialog(null,computer.getName() +" vs "+ player.getName());
        
        for(int i=1; i<=7; i++){
            int dice1=Integer.parseInt(JOptionPane.showInputDialog("Enter value of dice 1."));
            int dice2=Integer.parseInt(JOptionPane.showInputDialog("Enter value of dice 2."));
            player.playerRoll(dice1,dice2);
            JOptionPane.showMessageDialog("Your score this round was "" !");
        
    
    
    
    
    
    
    
    
    
    }   
}
}