
import javax.swing.JOptionPane;

public class C4_30{
    public static void main()
    {
        String firstSide;
        String secondSide;
        String thirdSide;
        double side1, side2, side3;
        
        firstSide = JOptionPane.showInputDialog( "Enter value of first side" );
        secondSide = JOptionPane.showInputDialog( "Enter value of second side" );
        thirdSide = JOptionPane.showInputDialog( "Enter value of third side" );
        side1 = Double.parseDouble( firstSide );
        side2 = Double.parseDouble( secondSide );
        side3 = Double.parseDouble( thirdSide );
        
        if ( side1 * side1 + side2 * side2 == side3 * side3 ) 
        {JOptionPane.showMessageDialog( null, "These sides make a triangle" );}
        else {JOptionPane.showMessageDialog( null, "These sides do not make a triangle" );};
        
        else if ( side2 * side2 + side3 * side3 == side1 * side1 )
        {JOptionPane.showMessageDialog( null, "These sides make a triangle", );}
        else {JOptionPane.showMessageDialog( null, "These sides do not make a triangle", );};

    }
}