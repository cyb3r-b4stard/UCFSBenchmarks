import javax.swing.JOptionPane;

public class IFstatements
   {
   public static void main( String []args)
      {
      
          String day10 = JOptionPane.showInputDialog( " enter name ");
          String day1 = JOptionPane.showInputDialog( "enter amount of money you have");
          
