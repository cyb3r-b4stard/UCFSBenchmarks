    ArrayList<Book> bookList;
      ArrayList<Movie> movieList;
      public void addBook(Book b)
      {
          bookList.add(b);
        }
        public void addMovie(Movie b)
      {
          movieList.add(b);
        }
         public void removeBook(Book b)
      {
          bookList.remove(b);
        }
        public void removeMovie(Movie b)
      {
          movieList.remove(b);
        }
        public Book findBook(String refNum)
        {
            Book b = null;
            for (int i = 0; i < bookList.size(); i++)
            {
                b=bookList.get(i);
                if (b.getRefNumber().contains(refNum))
                    return b;
            }
            return b;
        }
         public Movie findMovie(String refNum)
        {
            Movie m = null;
            for (int i = 0; i < movieList.size(); i++)
            {
                m=movieList.get(i);
                if (m.getRefNumber().contains(refNum))
                    return m;
            }
            return m;
        }
