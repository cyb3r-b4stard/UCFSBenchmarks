/* #### ##### ## #### ## ##### # #######'# ########## ## ######. ## ######## ## ### #######, ### #####
 * ### ### ######## ##### #############. (##: ####, ####, ######, ########)
 */

public class Attendance
{
    private int present;
    private int tardy;
    private int absent;
    
    public Attendance(int present, int tardy, int absent)
    {
        this.present = present;
        this.tardy = tardy;
        this.absent = absent;
    }
    
    public void presentToday()
    {
        present++;
    }
    
    public void tardyToday()
    {
        tardy++;
    }
    
    public void absentToday()
    {
        absent++;
    }
    
    public int getpresent()
    {
        getpresent() = present;
    }
    public int gettardy()
    {
        gettardy() = tardy;
    }
    public int getabsent()
    {
        getabsent() = absent;
    }
    public void setpresent(int x)
    {
        present = x;
    }
    public void settardy(int x)
    {
        tardy = x;
    }
    public void setabsent(int x)
    {
        absent = x;
    }
    public boolean equals(Attendance x)
    {
        if(Attendance = x.getpresent() && Attendance = x.gettardy() && Attendance = x.getabsent())
        {
            return(true);
        }
        else
        {
            return(false);
        }
    }
    public String toString()
    {
        
    }
}