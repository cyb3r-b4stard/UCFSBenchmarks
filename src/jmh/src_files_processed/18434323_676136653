import java.util.Date;
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Sesion extends Sala
{
    private int numeroSesion;
    private Date fechaSesion;
    private int vendidas;
    private int disponibles;
    private Pelicula peliculaSesion;
    
    /**
     * Constructor for objects of class Sesion
     */
    public Sesion()
    {
        
    }

    /**
     * Constructor 2 for objects of class Sesion
     */
    public Sesion(int numeroSesion, Date fechaSesion, int numeroSala, int butacas, int vendidas, Pelicula peliculaSesion)
    {
        this.setNumeroSesion(numeroSesion);
        this.setFechaSesion(fechaSesion);
        super(numeroSala, butacas);
        this.setActualizarButacasVendidas(vendidas);
        this.setPeliculaSesion(peliculaSesion);
    }
    
    /** 
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void setNumeroSesion(int numeroSesion)
    {
        this.numeroSesion = numeroSesion;
    }
    
    public int getNumeroSesion()
    {
        return numeroSesion;
    }
    
    public void setFechaSesion(Date fechaSesion)
    {
        this.fechaSesion = fechaSesion;
    }
    
    public Date getFechaSesion()
    {
        return fechaSesion;
    }
    
    public void setActualizarButacasVendidas(int vendidas)
    {
        this.vendidas = vendidas;
    }
    
    public int getActualizarButacasVendidas()
    {
        return vendidas;
    }
    
    public void setButacasDisponibles(int disponibles)
    {
        disponibles = getButacas() - vendidas; 
        this.disponibles = disponibles;
    }
    
    public int getButacasDisponibles()
    {
        return disponibles;
    }
        
    public void setPeliculaSesion(Pelicula peliculaSesion)
    {
        this.peliculaSesion =  peliculaSesion;
    }
    
    public Pelicula getPeliculaSesion()
    {
        return peliculaSesion;
    }
        
        public void mostrarInfoSesion()
    {
        System.out.println("#############################");
        System.out.println("Número de Sesión: " + numeroSesion);
        System.out.println("Sesión fecha: " + fechaSesion.toLocaleString());
        System.out.println("Pelicula: " + peliculaSesion);
        System.out.println("Sala de proyección: " + numeroSala);
        System.out.println("Butacas de la Sala: " + butacas);
        System.out.println("Butacas disponibles: " + disponibles);
        System.out.println("#############################");
        System.out.println("");
    }
}