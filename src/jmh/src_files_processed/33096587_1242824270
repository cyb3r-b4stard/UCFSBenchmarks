public class Concesionario
{
    private String Nombre;
    private String Direccion;
    private Carro[] Carros;

    /**
     * Constructor for objects of class Concesionario
     */
    public Concesionario(String Nombre,String Direccion)
    {
        this.Nombre=Nombre;
        this.Direccion=Direccion;
        Carros= new Carro[10];
        
       Carros[0]=new Carro("2010","AS36D", "Ford","650", 52000000);
       Carros[1]=new Carro("2012","AS36D", "Chevrolet","600", 62000000);
       Carros[2]=new Carro("2016","AS36D", "Chevrolet","250", 35000000);
       Carros[3]=new Carro("2015","AS36D", "Chevrolet","350", 36000000);
       Carros[4]=new Carro("1900","AS36D", "Nisan","600", 29000000);
       Carros[5]=new Carro("1990","AS36D", "Ford","400",28000000);
       Carros[6]=new Carro("1991","AS36D", "mazda","150", 58000000);
       Carros[7]=new Carro("1992","AS36D", "ferrari","100", 26000000);
       Carros[8]=new Carro("1996","AS36D", "Nisan","230", 22000000);
       Carros[9]=new Carro("2005","AS36D", "ferrari","690", 30000000);
        
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public void cambiarPrecio(String Placa, int nuevoPrecio)
    {
        boolean esta= false;
        for(int i=0;i<10;i++){
            if(Carros[i].getPlaca().equals(Placa)){
                Carros[i].setPrecio(nuevoPrecio);
                esta=true;
                System.out.println("El nuevo precio de el auto " + Carros[i].getMarca() + " de placas" + Carros[i].getPlaca()+ " es" + Carros[i].getPrecio());
                break;
            }
            
    }
    if(esta==false){System.out.println("La placa ingresada no coincide con ningun auto");}
}

public void NumeroCarros(){
    for(int i=0;i<10; i++){
        if(Carros[i].getPrecio()>= 20000000 &&Carros[i].getPrecio()<=30000000){
        System.out.println("los autos que valen entre  20000000 y 30000000 son : ");
        System.out.println("el auto " + Carros[i].getMarca()+" vale " + Carros[i].getPrecio());
        }
    }
}
public void MayorPrecio(){
    for(int i=0;i<10; i++){
        
    }
}
public void AumentarPrecio(){
    double AumentarPrecio=0;
    for(int i=0;i<10; i++){
        AumentarPrecio= Carros[i].getPrecio()*0.10;
       Carros[i].setPrecio(Carros[i].getPrecio() + AumentarPrecio);
       
}
public void carrosChevrolet(){
    for(int i=0;i<10; i++){
        if(Carros[i].getMarca().equals("Chevrolet")){
        System.out.println("los autos chevrolet son: ");
        System.out.println("el auto de placa " + Carros[i].getPlaca()+ "y vale" + Carros[i].getPrecio());
        }
    }
}
}