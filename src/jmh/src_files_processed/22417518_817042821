
/**
 * ##### # ########### ## ##### ################# ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class IntegerCalculator implements Calculator
{
    public int add(int a, int b)
    {
        return a + b;
    }

    public int sub(int a, int b)
    {
        return a - b;
    }

    public int mult(int a, int b)
    {
        return a * b;
    }

    public int inverse(int a) throws Exception
    {
        if(a == 1)
            return 1;
        if(a == -1)
            return -1;
        
        throw new Exception("Tallet " + a + " har ikke en invers");
    }

    public int potens(int a, int b)
    {
        for(interator b; b > 0;)
        return a*a*a...*a-b;
    }

    public String toString()
    {
        return "Almindelig lommeregner";
    }
}