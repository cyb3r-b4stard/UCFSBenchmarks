 * #######: (##.##.####)
 */
public class Point
{
    private int _x;
    private int _y;
    
    private final int DEF_X = 0;
    private final int DEF_Z = 0;
    
    /**
     * Constructor 1
     * 
     * Note: if the mark is not valid date - create mark 0
     * 
     * @param x - x
     * @param y - y
     */
    public Point (int x, int y) 
    {
        if ( valid (x, y) ) 
        {
            _x = x ;
            _y = y ;
        } else {
            _x = DEF_X ;
            _y = DEF_Y ;   
    
        } 
    }
    /**
     * Constructor 2
     * 
     * Note: get another mark and copy the parameter
     * 
     * @param x - x
     * @param y - y
     */
    public Point (Point other)
    {
        
    }
    /**
    * return value of the mark
    * @return value of the mark
    */
     public int getX() 
     {
        return _x;
    }
    public int getY() 
    {
        return _y;
    }
    
     /**
      * change the mark
      * Note : if the new mark is not valid - the date will not change
      * @parameter mark - new mark
      */
    public void setX (int x) 
    {
        if ( valid (x, _y) ) {
            _x = x;
        }
    }
    public void setY (int y) 
    {
        if ( valid(_x, _y) ) 
        {
            _y = y;
        }
    }
    /**
     * 
     * 
     */
    public boolean equals (Point other) 
    {
        return ( _x == other.x && _y == other._y );

    } 
    private boolean valid (int x, int y) 
    {
        if (0 <= y || 0 <= y)
        {
            return false;
        }
    }
    public boolean isAbove (Point other)
    {
        return ( _y > other._y  ) ;
    }
    public boolean isUnder (Point other)
    {
        return other.isAbove (this) ;
    }
    public boolean isLeft (Point other)
    {
        return ( _x > other._x ) ;
    }
    public boolean isRight (Point other)
    {
      return other.isLeft (this) ;  
    }
        public boolean middle (Point other)
    {
        return () ;
    }
    /**
     * 
     */
    public String toString() 
    {
        return ("("+_x+","+_y+")") ;
    }
}    
