public class Tp2Gr10 {
    private static int choixMenu;
    private static int choixMenu_1;

    private static int choixMenuTrans;
    private static int choixMenuAnaly;
    private static String chaine = "";
    private static String chaine_1 = "";
    private static String chaine_2 = "";
    final static int MIN = 3;
    final static int MAX = 32;

    public static void main (String[] params) {
        presenter();
        choixMenu = menuPrincipal();

        while(choixMenu != 3){

            if(choixMenu == 1){
                choixMenu_1 = menuTransformer();
                chaine_1 = SaisirEtValiderChaine(" Veuillez entrer une chaine de 3 a 32 caracteres inclusivement allli:", MIN, MAX);    

                if(choixMenu_1 == 1){
                    chaine_2=changerMinuscules(chaine_1);                                   
                }else if(choixMenu_1 == 2){
                    chaine_2=changerMajuscules(chaine_1);             
                }else{
                    chaine_2=changerMinusEtMajus(chaine_1);                                                         
                }
                System.out.println(chaine_2);
            }else{
                choixMenu_1 = menuAnalyser();
                if(choixMenu_1 == 1){
                    chaine_2=changerMinuscules(chaine_1);                                   

                }else{
                    chaine_2=changerMinusEtMajus(chaine_1);                                                         
                }
            }
            choixMenu = menuPrincipal();            

        }
        
    } 

    public static int menuPrincipal(){
        do{ 
            System.out.println();
            System.out.println(" MENU DES OPERATIONS");
            System.out.println(" 1- Transformer");
            System.out.println(" 2- Analyser");
            System.out.println(" 3- Terminer");
            choixMenu = saisirEtValiderChoix(1, 3);

            if(choixMenu <1 || choixMenu > 3)
                System.out.println(" Veuillez entrer un chiffre entre 1 et 3 inclusivement svp :");

        }while(choixMenu < 1 || choixMenu > 3);

        return choixMenu;
    }

    public static int menuTransformer(){
        int choix;
        do{ 
            System.out.println();
            System.out.println(" MENU TRANSFORMATIONS");
            System.out.println(" 1- Remplacer les lettres minuscules par leur position dans l alphabet entre 2*");
            System.out.println(" 2- Remplacer les lettres MAJUSCULES par leur position dans l alphabet entre 2@");
            System.out.println(" 3- Combinaison des options 1 et 2");
            choix = saisirEtValiderChoix(1, 3);

            if(choix <1 || choix > 3)
                System.out.println(" Veuillez entrer un chiffre entre 1 et 3 inclusivement svp :");
        }while(choix < 1 || choix > 3);

        return choix; 
    }

    public static int  menuAnalyser(){

        do{
            System.out.println(" MENU ANALYSE");
            System.out.println(" 1- Analyse complete d un caractere");
            System.out.println(" 2- Analyse complete d une chaine");
            choixMenu = saisirEtValiderChoix(1, 2);
            if(choixMenu <1 || choixMenu > 2)
                System.out.println(" Veuillez entrer un chiffre entre 1 et 2 inclusivement svp :");

        }while(choixMenu < 1 || choixMenu > 3);
        return choixMenu;
    }

    public static void presenter(){
