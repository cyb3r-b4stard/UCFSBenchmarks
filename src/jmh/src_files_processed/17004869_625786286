    public static int saisirEtValiderChoix(int min, int max){ 
        int choix_1;
        System.out.println(" Entrer votre choix  svp:");
        choix_1 = Clavier.lireInt(); 
        return choix_1;
    }

    public static boolean estMajuscule(char c){
        boolean valeur = false;
        if(c >= 'A' && c <= 'Z'){
            valeur = true;
        }
        return valeur;
    }

    public static boolean estMinuscule(char c){
        boolean valeur = false;
        if(c >= 'a' && c <= 'z'){
            valeur = true;
        }
        return valeur;
    }

    public static boolean estVoyelle (char c){
        boolean valeur = false;
        if(c == 'a' || c == 'e' ||c == 'i' || c == 'o' ||c == 'u' || c == 'y' || c == 'A' || c == 'E' ||c == 'I' || c == 'O' ||c == 'U' || c == 'Y'){
            valeur = true;
        }
        return valeur;
    }

    public static boolean estConsonne (char c){
        boolean valeur = false;
        if(((c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z'))&&(c != 'a' && c != 'e' && c != 'i' && c != 'o' && c != 'u' && c != 'y' && c != 'A' && c != 'E' && c != 'I' && c != 'O' && c != 'U' && c != 'Y')){
            valeur = true;
        }
        return valeur;
    }
    
    public static boolean estLettre(char c){
        boolean valeur = false;
        if((c >= 'A' && c <= 'Z') || (c >= 'a' && c <= 'z')){
            valeur = true;
        }
        return valeur;
    }
    
     public static boolean estNonAlphaNumerique(char c){
        boolean valeur = false;
        if(!((c >= 'A' && c <= 'Z') || (c >= 'a' && c <= 'z')||(c >= '0' && c <= '9'))){
            valeur = true;
        }
        return valeur;
    }
    
    public static boolean estChiffre(char c){
        boolean valeur = false;
        if(c >= '0' && c <= '9'){
            valeur = true;
        }
        return valeur;
    }

    public static String SaisirEtValiderChaine(String msg, int min, int max){
        String ch = "";

        do{
            
            if(ch.length() < min || ch.length() > max){
                System.out.println(msg);
                ch = Clavier.lireString(); 
            }

        }while(ch.length() < min || ch.length() > max);
        return ch;
    }

    public static String changerMajuscules(String s){
        String  chaine_1 = "";

        for(int i = 0; i < s.length(); i++){
            char c = s.charAt(i);

            if(c >= 65 && c <= 90){ 
                chaine_1 = chaine_1 + "@" + (c-64)  + "@";        
            }else{
                chaine_1 = chaine_1 + c;
            }  

        }
        return chaine_1; 
    }

    public static String changerMinuscules(String s){
        String  chaine_1 = "";

        for(int i = 0; i < s.length(); i++){
            char c = s.charAt(i);

            if(c >= 97 && c <= 122){        
                chaine_1 = chaine_1 + "@" + (c-96)  + "@";         
            }else{
                chaine_1 = chaine_1 + c;
            }  
        }

        return chaine_1;
    }

    public static String changerMinusEtMajus(String s){
        String  chaine_1 = "";

        for(int i = 0; i < s.length(); i++){
            char c = s.charAt(i);

            if(c >= 65 && c <= 90){ 
                chaine_1 = chaine_1 + "@" + (c-64)  + "@";        
            }else if(c >= 97 && c <= 122){
                chaine_1 = chaine_1 + "@" + (c-96)  + "@";
            }else{
                chaine_1 = chaine_1 + c;
            }    
        }
        return chaine_1; 
    }

    public static char saisirEtValiderCaractere (){
        System.out.println("Veuillez entrer un seul caractere svp");
        car = Clavier.lireCharLN(); 

        do{

            if(chaine.length() < min || chaine.length() > max)
                System.out.println("ERREUR! Vous devez entrer UN caractere!");

            chaine = Clavier.lireString(); 
        }while(chaine.length() < min || chaine.length() > max);

        return chaine; 

    }
    public static void analyseComplete (char c){
        System.out.println(" Resultat d analyse");
        System.out.println(" Lettre : " + estLettre(c));
        System.out.println(" Voyelle : " + estVoyelle (c);
        System.out.println(" Consonne : " + estConsonne (c));
        System.out.println(" Chiffre : " + estChiffre(c));
        System.out.println(" Caractere non alpha-numerique : " + estNonAlphaNumerique(c));
    }

