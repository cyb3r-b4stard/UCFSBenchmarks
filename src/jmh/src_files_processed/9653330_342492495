public class Zeichnung
{
    private Kreis reifen1;
    private Kreis reifen2;
    private Quadrat karosse;
    
    
    private Kreis rot;
    private Kreis gelb;
    private Kreis gruen;
    /**
     * Erzeuge ein Exemplar der Klasse Zeichnung
     */
    public Zeichnung()
    {
    }

    /**
     * Zeichne die Zeichnung.
     */
    public void zeichne()
    {
        reifen1 = new Kreis();
        reifen1.farbeAendern("schwarz");
        reifen1.horizontalBewegen(80);
        reifen1.vertikalBewegen(150);
        reifen1.sichtbarMachen();
        
        reifen2 = new Kreis();
        reifen2.farbeAendern("schwarz");
        reifen2.horizontalBewegen(120);
        reifen2.vertikalBewegen(150);
        reifen2.sichtbarMachen();
        
        karosse = new Quadrat();
        karosse.farbeAendern("schwarz");
        karosse.horizontalBewegen(60);
        karosse.vertikalBewegen(150);
        karosse.sichtbarMachen();
       
        
        rot = new Kreis();
        rot.farbeAendern("rot");
        rot.horizontalBewegen(200);
        rot.vertikalBewegen(50);
        rot.sichtbarMachen();
        
        gelb = new Kreis();
        gelb.farbeAendern("schwarz");
        gelb.horizontalBewegen(200);
        gelb.vertikalBewegen(100);
        gelb.sichtbarMachen();
        
        gruen = new Kreis();
        gruen.farbeAendern("schwarz");
        gruen.horizontalBewegen(200);
        gruen.vertikalBewegen(150);
        gruen.sichtbarMachen();
     
    
    }
    
    
    /**
