/**
 * #### ######, ##### ######### ############# #### ### #### ######.
 * #### ###### #### ##### ######## ######### ####, #####
 * ################### ##############.
 *
 * @###### (##### ##### #### #########.)
 * @####### (### ####### ##### #########.)
 */
class Buch
{
    private String autor;
    private String titel;
    private int seiten;
    private String refNummer;
    private int ausgeliehen;
    private boolean kursText;

    /**
     * Setze den Autor, die Seitenzahl, die Referenznummer, den Titel und dass dieses Buch ein Fachbuch zu einem Kurs ist, wenn ein Exemplar erzeugt wird.
     */
    public Buch(String buchautor, String buchtitel)
    {
        autor = buchautor;
        titel = buchtitel;
        seiten = 100;
        refNummer = "";
        ausgeliehen= 0;
        kursText=true;
    }

    /**
     * Zeige wie der Autor heisst.
     */
    public String gibAutor()
    { 
        return autor;
    }

    /**
     * Zeige wie der Titel lautet.
     */
    public String gibTitel()
    {
        return titel;

    }

    /**
     * Drucke der Name des Autors aus.
     */
    public void autorAusgeben()
    {
        System.out.println(autor);

    }

    /**
     * Wieviel Seiten hat das Buch
     */
    public int seiten()
    {
        return seiten;
    }

    /**
     * Drucke mir den Autor, den Titel, die Seitenanzahl, die Anzahl der Ausleihungen die Referenznummer und ob das Buch ein Fachbuch zu einem Kurs ist aus.
     */
    public void  detailsAusgeben()
    {
        if (refNummer.length() >= 1)
        {
            System.out.println("Autor:"+autor+  ";  Titel:" + titel + ";  Seitenanzahl:"+ seiten+";  Referenznummer:"+ refNummer+ );
            System.out.println("Buch wurde "+ausgeliehen+ "-mal ausgeliehen."+";  Fachbuch zu einem Kurs:"+kursText);
        } 
        else 
        {
            System.out.println( "Autor:"+autor+";  Titel:" + titel + ";  Seitenanzahl:"+ seiten +"; Buch wurde "+ausgeliehen+ "-mal ausgeliehen. "+ ";  Referenznummer:"+"ZZZ");
        }
    }

    /**
     * Setze die Referenznummer auf einen gewünschten Wert mit mindestens drei Zeichen, sonst eine Fehlermeldung ausgeben.
     */
    public void setzeRefNummer(String ref)
    {
        if (ref.length() >= 3)
        {
            refNummer= ref;

        }
        else 
        {
            System.out.println( "Bitte gültige Referenznummer mit mindestens 3 Zeichen eingeben!");
        }
    }

    /**
     * Liefere die Referenznummer zürck
     */
    public String gibRefNummer()
    {
        return refNummer; 

    }

    /** 
     * Verleiht das Buch und zählt, wie oft das Buch ausgeliehen wurde. 
     */
    public void ausleihen()
    { 
        ausgeliehen++;

    
    }

    /**
     * Liefere die Zahl der Ausleihungen zürck.
     */
    public int ausgeliehen()
    {
        return ausgeliehen;

    }
    
    /**
     *Ist dieses Buch ein Fachbuch zu einem Kurs?
     */
    public boolean istKursText()
    {
       return kursText;
    }
    
}