    public boolean jePlatny() {
        if( (mesiac <1) || (mesiac >12)) {
            return false;
        }
        if ( den<1 || ( den> getMaxPocDniPreMesiac(mesiac)){
            return false;
        }  
        return true;
    }
    public int jePlatny () {
       switch (mesiac){ 
       case 1:case 3:case 5:case 7:case 8:case 10:case 12:
