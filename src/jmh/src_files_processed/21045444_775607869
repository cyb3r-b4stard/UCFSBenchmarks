import java.util.Scanner;
/**
 * ##### # ########### ## ##### ############### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class TemperatureMain
{
    public static void main (String [] args) { 
    double inputTemperature = 0.0;
    Scanner keyboard = new Scanner(System.in); 
    Temperature t1 = new Temperature();
    Temperature t2 = new Temperature (); 
    Temperature t3 = new Temperature (); 
    boolean result;
    boolean goodType = false; 
    boolean moreTemperatures = true; 
    String temperatureType = "";
    while (moreTemperatures ) {
    System.out.print ("Enter a temperature type (F for Farenheit, C for Celsius, K for Kelvin or Q to Quit): ");
    temperatureType = keyboard.next (); 
    while (goodType) { 
        if (
        temperatureType.equals("C")) ||
         temperatureType.equals ("F") ||
         temperatureType.equals ("K") ||
         temperatureType.equals ("Q") {
         goodType = true; }
    }
        else { 
            System.out.println ("\nInvalid Temperature Type "); 
            System.out.println ("The type must be C, F, K, or Q "); 
            System.out.println ("Please enter another temperature"); 
            temperatureType = keyboard.nextInt(); 
    if (temperatureType.equals ("Q")) { 
        moreTemperatures = false; 
        System.out.println ("\nProgram ended."); 
        
    }
        else {
    System.out.print("Enter the temperature: "); 

    inputTemperature = keyboard.nextDouble (); 
    
    if (temperatureType.equals("F")) {
        System.out.println("You entered " + inputTemperature + 
            " degrees Fahrenheit"); 
            t1.setDegreesFahrenheit(inputTemperature);
            System.out.println("which is " + t1.getDegreesCelsius() + 
            " degrees Celsius"); 
            System.out.println("and " + t1.getDegreesKelvin() + 
            " degrees Kelvin.");
            
        }
    else if (temperatureType.equals ("C")) {
        System.out.println("You entered" + inputTemperature + "degrees Celsius");
        t2.setDegreesCelsius(inputTemperature); 
        System.out.println ("which is" + t2.getDegreesFahrenheit () + "degrees Fahrenheit"); 
        System.out.println("and" + t2.getDegreesKelvin () + "degrees Kelvin. "); 
    }
    else if (temperatureType.equals ("K")) {
        System.out.println("You entered" + inputTemperature + " degrees Kelvin"); 
        t3.setDegreesKelvin (inputTemperature); 
        System.out.println (" which is" + t3.getDegreesFahrenheit () + " degrees Fahrenheit"); 
        System.out.println ("and" + t3.getDegreesCelsius () + " degrees Celsius. "); 
    }
}
}
}
    
}

