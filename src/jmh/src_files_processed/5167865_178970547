    public Customer(String theName, int theAge, double theBalance) {
       name = theName;
       age = theAge;
       balance = theBalance;
    }
    
    public int getAge() {
        return age;
    }
    
    public double getBalance() {
        return balance;
    }
    
    public void setAge(int anotherAge) {
        age = anotherAge;
    }
    
    public void setBalance(double anotherBalance) {
        balance = anotherBalance;
    }
    
    public void printCustomer() {
       System.out.println("The customer's name is: " + name);
       System.out.println("The customer's age is: " + age);
       System.out.println("The balance is: " + balance);
    }
    
    public void deposit(double amountToAdd) {
        balance = balance + amountToAdd;
    }
    
