class sj
{
    private int price;
    private int balance;
    private int total;
    public Ticket(int ticketCost)
    {
        price = ticket Cost;
        balance = 0;
        total = 0;
    }
    public int getPrice()
    {
        return price;
    }
    public int getBalance()
{
    return balance;
}
public void setMoney(int amount)
{
    balance +=amount;
}
public void setTicket()
{
    System.out.println("###############");
    System.out.println("Ticket");
    System.out.println("Rs"+ price);
    System.out.println("###############");
    System.out.println();
    setMoney(5000);
    total = total + getBalance();
    balance = 0;
}
}
    