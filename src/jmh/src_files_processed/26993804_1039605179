import GLOOP.*;
public class Schneemannszene {
    private GLKamera kamera;
    private GLLicht  licht;  
    private GLHimmel himmel;
    private GLBoden  boden;
    private Schneemann schneemann;
    
    int max = 10;

    public Schneemannszene(){
        kamera = new GLSchwenkkamera(800,600);
        kamera.setzePosition(-600,400,800);
        licht  = new GLLicht();  
        boden  = new GLBoden("Schnee.jpg");
        himmel = new GLHimmel("Himmel.jpg");


        int az = 0;
        while (az<max) {
            schneemann = new Chinese((Math.random()*-1460),(Math.random()*1100));
            az = az+2;
            }
        }
    }
}