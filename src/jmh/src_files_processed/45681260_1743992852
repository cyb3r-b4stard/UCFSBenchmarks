
import java.util.Scanner; 
import java.util.Random;
public class RockPaperScissors
/**
 * code to run the game rock, paper and scissors)
 * @author (dini28)
 * @version (2/22/17)
 */
{ 
    /**
     * @param args
     */
    public static void main(String[]args)
    {
        Scanner scan = new Scanner(System.in);
        int wins = 0;
        int losses = 0;
        int ties = 0;
        System.out.println("(R)ock,(P)apers,(S)cissors, or quit");
        String human = scan.nextLine();

        while(!human.equals("quit")) 
        {
            String cpu = getComputerChoice();
            boolean finalResult = playerWins(human, cpu);

            if(!human.equals("R") && !human.equals("P") && !human.equals("S") && human.equals("quit")) {
                System.out.println("Invalid Input");
            }

            else if (cpu.equals(human)) {
                System.out.println("Tie!");
                ties++;
            }

            else if(playerWins(human, cpu) == true) 
            {

                System.out.println("Your Point!");
                System.out.println(human + ( beats ) cpu);
                System.out.println(""); 

            }
            
            else {
                System.out.println("My Point!");
                System.out.println(cpu + ( beats ) human);
                System.out.println("");
            }

            System.out.println("(R)ock,(P)apers,(S)cissors, or quit");
            human = scan.nextLine();
        }
        System.out.println("You won" + wins + "times");
        System.out.println("You lost " + losses + " times.");
        System.out.println("We tied " + ties + " times.");

    }

    /** 
     * @randomly between rock papaer and scissors
     * @return rock, paper or scissors
     */
    public static String getComputerChoice()
    {
        Random gen = new Random();
        String cpu = " ";
        int javaInt;
        javaInt = gen.nextInt(3);
        if(javaInt == 0) {
            cpu = "R";
        }
        if(javaInt == 1) {
            cpu = "P";
        }
        if(javaInt == 2) {
            cpu = "S";
        }

        return cpu;
    }

    /**
     * @param String human
     * @param String cpu
     * @return human point when true cpu point when false
     */
    public static boolean playerWins(String human, String cpu)
    {

    }
{
    else if (cpu.equals("R") && (human.equals("P")))
    { 
        return true;
    }

    else if(cpu.equals("S") && (human.equals("R")))
    { 
        return true;
    }

    else if (cpu.equals("P") && (human.equals("S")))
    {

        return true;

    }

}
