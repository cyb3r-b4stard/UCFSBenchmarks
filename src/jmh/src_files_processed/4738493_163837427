
/**
 * ###### ########.
 * 
 * @###### ##. #### 
 * @####### ##/##/##
 */
public class Person
{
private String firstName;
private String middleName;
private String lastName;
private String init;

public Person(String setFirstName, String setMiddleName, String setLastName){
    firstName = setFirstName;
    middleName = setMiddleName;
    lastName = setLastName;
}

public String getInit()
	{
	String idName = "";
	idName = firstName.substring(0,1);
	if (middleName != null){
	idName = middleName.substring(0,1);
	idName = lastName.substring(0,1);
	else{
	idName = lastName.substring(0,2);
	}
	return idName;
	}

public String Person(){
    return "Name: " + firstName + " " + middleName + " "  + lastName;
}

public void Print()
{
    System.out.println("Name: " + firstName + " " + middleName + " " + lastName);
}

}
