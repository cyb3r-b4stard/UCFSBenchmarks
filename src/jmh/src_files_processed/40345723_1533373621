import java.io.*;
import java.util.*;
import java.time.*;

public class store {

    public static String choice;
    public static String item_number;

    public static class store_item{
        int item_count;
        float item_price;
    }    

    public static class cart{
        int cart_item_count;
        float cart_item_value;
    }

    public static class cart_item{
        String cart_item_type;
        float cart_item_price;
    }

    public static void get_customer_choice(){
        System.out.println("** What would you like to do now? **");
        System.out.println("** Enter a choice from the following **");
        System.out.println("*  Enter 1 to See the items available  * ");
        System.out.println("*  Enter 2 to add an item to your cart *");
        System.out.println("** You can  buy up to three items in your cart **");
        System.out.println("* Enter 3 to see items in your cart *");
        System.out.println("* Enter 9 to exit my store *");
        Scanner user_choice = new Scanner (System.in);
        choice = user_choice.next();
    }

    public static String get_item_choice(){
        System.out.println("** Enter a choice from the following items **");
        System.out.println("*  Enter 1 to buy a pencil * ");
        System.out.println("*  Enter 2 to buy an eraser * ");
        System.out.println("*  Enter 3 to buy a scale * ");
        System.out.println("** You can  buy up to three items in your cart **");
        Scanner item_choice = new Scanner (System.in);
        item_number = item_choice.next();
        return(item_number);
    }

    /*  public static void main (String[ ] args){ */
public static void MyStore(){
        /* keep items in the store */

        store_item pencil = new store_item();
        pencil.item_count = 2;
        pencil.item_price = 2.50f;

        store_item eraser = new store_item();
        eraser.item_count = 5;
        eraser.item_price = 1.50f;

        store_item scale = new store_item();
        scale.item_count = 3;
        scale.item_price = 5.00f;

        /* store is now open */

        System.out.println("** Welcome to nayan-tara's store ! you can buy the world here ! **");
        System.out.printf("now: %s %n", LocalDateTime.now());

        /* take a cart */

        cart mycart = new cart();
        mycart.cart_item_count = 0;
        mycart.cart_item_value = 0f;
        
        String MyChoice;
        

        /* Initialise three items that can be bought */
        cart_item item1 = new cart_item();
        cart_item item2 = new cart_item();
        cart_item item3 = new cart_item();

        do {
            get_customer_choice(); 
            System.out.println("Your choice was ...." +choice);

            switch (choice)
            {
                case "1": 
                /* see items available in the store */
                System.out.println("Items available in the Store");
                System.out.println("Pencils : Number of pencils available =" +pencil.item_count);
                System.out.println("Pencils : Price of pencils available =" +pencil.item_price);

                System.out.println("Erasers : Number of erasers available =" +eraser.item_count);
                System.out.println("Erasers : Price of erasers available =" +eraser.item_price);

                System.out.println("Scales : Number of scales available =" +scale.item_count);
                System.out.println("Scales : Price of scales available =" +scale.item_price);

                break;

                case "2": 
                /* buy one item and load into the cart */
               MyChoice = get_item_choice();
               If (MyChoice.equals("1"))
               {
                    System.out.println("1 pencil was chosen");          
                };
                If (MyChoice.equals("2")) 
                {
                    System.out.println("1 eraser was chosen");          
                }; 
                If (MyChoice.equals("3")) 
                {
                    System.out.println("1 scale was chosen");          
                };

                
                    System.out.println("It was two ...");
                    break;

                    case "3": 
                    /* See items in your cart */
                    System.out.println("Items available in the Cart");  
                    System.out.println("My Cart: Number of items loaded =" +mycart.cart_item_count);
                    System.out.println("My Cart: Value of items loaded =" +mycart.cart_item_value);
                    System.out.println("** You can  buy up to three items only in your cart **");       
                    break;

                    case "4": System.out.println("It was four ...");
                    break;

                    case "9": System.out.println("It was to exit ...");
                    break;

                    default:System.out.println("You made an invalid choice...");
                }
            } while (!choice.equals("9")); 
            System.out.println("** Thank you shopping at my Store ... bye bye ***");  
        }


    }