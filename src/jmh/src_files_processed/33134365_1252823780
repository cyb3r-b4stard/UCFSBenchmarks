import java.util.Scanner;
public class FooCorporation {
    public static void main(String [] args) {  
       
        Scanner input = new Scanner(System.in);
        
        System.out.println("Please enter a base pay  ");
       double pay = input.nextDouble();
        
        System.out.println("Please enter how many hours employee worked  ");
       int value = input.nextInt();
       
       
    if(pay >= 8) {
    System.out.println("Employee got paid   " + pay*value);
    else(pay<8) 
    System.out.println("The base pay is less than minimum payment");
    for(value = 41; value < 60; value = value-40)
       System.out.println("Employee got paid   " + 1.5*value + 40*pay);
    for(value=60; value>60;){
    
        System.out.println("The employee worked too much");
    }
    
   
}
}
}