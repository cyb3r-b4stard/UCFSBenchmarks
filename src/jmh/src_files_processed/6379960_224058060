public class Destino
{

    private int id_Destino; 
    private String destino;
    private String pais;
    private int dias;
    private String hotel;

    public Destino(int id_Destino,String destino,String pais,int dias, String hotel)    
    { 
        setid_Destino(id_Destino);        
        setdestino(destino);        
        setpais(pais);
        setdias(dias);
        sethotel(hotel);

    }

    public Destino ()

    {
        setid_Destino(25);        
        setdestino("Santiago");        
        setpais("Chile");
        setdias(24);
        sethotel("Hola");
    }

    public void setid_Destino(int id_Destino)
    {
        this.id_Destino=id_Destino;
    }

    public int getid_Destino ()
    {
        return id_Destino;
    }

    public void setdestino(String destino)
    {
        this.destino=destino;
    }

    public String getdestino()
    {
        return destino;
    }

    public void setpais(String pais)
    {
        if (pais=="Chile")
            setid_Destino(13);

        this.pais=pais;
    }

    public String getpais()
    {
        return pais;
    }

    public void setdias(int dias)
    {
        this.dias=dias;
    }

    public int getdias()
    {
        return dias;
    }

    public void sethotel(String hotel)
    {
        this.hotel=hotel;
    }

    public String gethotel()
    {
        return hotel;
    }

    public void Imprimir()
    {
        System.out.println("El destino es: " +destino);
        System.out.println("La ID del destino es: "+id_Destino);
        System.out.println("El País elegido es: " +pais);
        System.out.println("Días de estancia: " +dias);
        System.out.println("Hotel elegido: " +hotel);
    }

    public String getstring()
    {
    return (("El destino es: " +destino + ", La ID del destino es: "+id_Destino+", El País elegido es: " +pais+", Días de estancia: " +dias+", Hotel elegido: " +hotel);
    }
}
