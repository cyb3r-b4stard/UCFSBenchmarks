import javax.swing.*;
import java.awt.*;
import java.util.*;

public class UmbrellaPanel extends JPanel
{
    private final int N_UMBRELLAS = 30;
    private random gen = new Random();
    
    public UmbrellaPanel()
    {
        setPreferredSize (new Dimension(300, 300));
        setBackground (Color.gray);
    }
    
    public void paintComponent(Graphics g)
    {
        Color color;
        int x, y, diameter;
        Umbrella umbrella
        super.paintComponent(g)
        for(int i=1; i<=N_UMBRELLAS; i++)
        {
            x = gen.nextInt(getWidth());
            y = gen.nextInt(getHeight());
            diameter = gen.nextInt(x);
            color = new color(gen.nextInt(255),gen.nextInt(255),gen.nextInt(255));
            umbrella = new Umbrella (diameter, color, x, y);
            umbrella.draw(g);
        }
    }
}