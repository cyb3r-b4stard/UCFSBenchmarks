
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class fatman
{
    private int eat;
    private int sleep;
    private int poop;
    private int die;
    private String death;
    /**
     * Constructor for objects of class fatman
     */
    public fatman(int hunger)
    {
        eat = hunger;
        sleep = 0;
        poop = 0;
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public int eat()
    {
        eat = eat + 3();
        die = die + 10;
        sleep();
        poop();
    }
    
    public int sleep()
    {
        sleep = sleep +3;
        die = die - 3;
    }
    
    public int poop()
    {
    poop = poop + 3;
    die = die - 2;
    }
    
    public getDie()
    {
        return die;
    }
    
    public die()
    {
    if (die >= 10)
        {
        death = "true";
    }
}