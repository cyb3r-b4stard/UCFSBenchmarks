
/**
 * ##### ############## ### ######## ### ######### #### ## # #### ### ######### ######.
 * 
 * @###### ###### ##### 
 * @####### #/#/####
 */
public class CO2FootprintV1Tester {
    public void static main(String [] args) {
        double gasUsed = 1288;
        double emissionsTons, emissionsPounds;
        
        CO2FootprintV1 annualGasEmissions = new CO2FootprintV1(gasUsed);
        
        emissionsTons = annualGasEmissions.getCO2Tons();
        emissionsPounds = annualGasEmissions.getCO2Pounds();
        
        /** Displaying Data **/
        System.out.println("\t\t   CO2 Emissions");
        System.out.printf("%s %18s %16s%n", "Gallons of Gas", "Pounds from Gas", "Tons from Gas");
        
        String columns = "Gallons of Gas    Pounds from Gas    Tons from Gas";
        for (int i = 0; i < columns.length(); i++) {
            System.out.print("*");
        }
        System.out.println();
        
        System.out.printf("%11.1f %17.2f %15.3f", gasUsed, emissionsPounds, emissionsTons);
        
    }
}