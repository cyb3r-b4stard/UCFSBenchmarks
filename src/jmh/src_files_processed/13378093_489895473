 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class FindLargest
{
    public static void main(String [] args) {
        double [] x = { 1.3, -5.6, 7.0, 2.5 };
        double [] y = { -1.4, -3.5, -2.0, -0.6, -2.7 };
        double largest = findLargest(x);
        System.out.println("Expected answer is 7.0, your answer is: " + largest);
        largest = findLargest(y);
        System.out.println("Expected answer is -0.6, your answer is: " + largest);
    }
    
    public static double findLargest(double [] n) {
        double anwser = n[0];
        for (int i=0; i<n.length; ++i) {
            if (n[1]>anwser) {
                anwser = i[];
            }
        }
        return anwser;
    }
}