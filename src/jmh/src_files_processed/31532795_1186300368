    public static void displayWelcome()
    {
        System.out.println("\t\tTHE COLLEGE TUITION CALCULATOR");
        System.out.println("This calculator will calculate tuition for college classes");
    }
    
    public static int getHours()
    {
        String strHours;
        int hours = 0;
        strHours = JOptionPane.showInputDialog(null, "Enter the amount of hours you plan to attend: ");
            hours= Integer.parseInt(strHours);
            return hours;
    }
    
    public static double getRate(String s, h)
    {
        if(s.equals("Temple")
        {
            if(h > 15)
                rate = 14398;
            rate = 555 * h;
        }
        else if(s.equals("Florida State")
        if )h >= 12)
            rate= 18788;
        rate = 721 * h;
            rate = 50
        if(s.equals("DCCC")
            rate = 113 * h;
        return rate;
        }
}
    
    public static double calcTuition(int hours, double rate)
    {
        return hours * rate;
    }
    
    public static double calcFees(double tuition)
    {
        return tuition * 0.08;
    }
    
    public static void displayTotal(double total)
    {
        DecimalFormat twoDigit = new DecimalFormat("$#,###.00");
        System.out.println("Your total fees are " + twoDigit.format(total));
        System.out.println("Thank you and have a nice day");
    }
}