import javax.swing.JOptionPane;
public class DemoIOJOptionPane
{
   String nombre;
   String telefono;
   String celular;
   String direccion;
   public DemoIOJOptionPane(){
       pideNombre();
       pideTelefono();
       pideCelular();
       pideDireccion();
       muestraSaludo();
       muestraNumeroTel();
       muestraNumeroCel();
       muestraDomicilio();
}
private void pideNombre(){
    nombre=JOptionPane.showInputDialog(null," Escribe tu nombre ");
}
private void pideTelefono(){
    telefono=JOptionPane.showInputDialog(null," Escribe su numero de telefono ");
}
private void pideCelular(){
    celular=JOptionPane.showInputDialog(null, " Escribe su numero de celular ");
}
private void pideDireccion(){
    direccion=JOptionPane.showInputDialog(null, " Escribe su Domicilio ");
}

private void muestraSaludo(){
    JOptionPane.showMessageDialog(null," Hola "+nombre);
}
private muestraNumeroTel(){
    JOptionPane.showMessageDialog(null, " Su numero de Telefono es "+telefono);
}
private muestraNumeroCel(){
    JOptionPane.showMessageDialog(null, " Su numero de Celular es "+celular);
}
private muestraDomicilio(){
    JOptionPane.showMessageDialog(null, " Su domicilio es en "+direccion);
}
public static void main(String[] args){
}
