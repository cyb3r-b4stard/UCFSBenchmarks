import sum.kern.*;
/**
 * @###### ##### ########  
 * @####### #.#.# #####
 */
public class Ampel
{

    private Rechteck gehause = new Rechteck();
    private Kreis rot = new Kreis();
    private Kreis gelb = new Kreis();
    private Kreis gruen = new Kreis();
    private Bildschirm bildschirm;
    
    
    private int phase = 0;
    private int hoehe = 600;
    private int breite = 200;
    
    public static final int ROT = 1;
    public static final int ROTGELB = 2;
    public static final int GRUEN = 3;
    public static final int GELB = 4;
    
    /**
     * Legt die Hoehe und Breite fest und instanziiert bildschirm
     *
     */
    public Ampel()
    {
        breite = 200;
        hoehe = 600;
        bildschirm = new Bildschirm(breite+40,hoehe+40);
        gehause = new Rechteck();
        gehause.setBreite(breite);
        gehause.setHoehe(hoehe);
        gehause.setPositionX(20);
        gehause.setPositionY(20);
        gehause.setFarbe(0);
        
        zeichne();
    }
    
    /**
     * Ampel Constructor
     *
     * @param pBreite A parameter
     * @param pHoehe A parameter
     */
    public Ampel(int pBreite, int pHoehe)
    {
        
    }

    /**
     * Legt die Phase fest, an der sich die Ampel orientiert
     *
     * @param pPhase A parameter
     */
    public void setPhase(int pPhase)
    {
    
    
    
    }
    
    /**
     * Legt fest, was in Phase "rot" an der Ampel geaendert, bzw. generiert wird
     *
     */
    public void rot()
    {
    
        ROT.setFarbe(10);
        GELB.setFarbe(11);
        phase = 1;
        GRUEN.setFarbe(11);
        
    }
    
    /**
     * Legt fest, was in Phase "rotgelb" an der Ampel geaendert, bzw. generiert wird
     *
     */
    public void rotgelb()
    {
    
        
    
    }
    
    /**
     * Legt fest, was in Phase "gelb" an der Ampel geaendert, bzw. generiert wird
     *
     */
    public void gelb()
    {
    
        GELB.setFarbe();
    
    }
    
    /**
     * Legt fest, was in Phase "gruen" an der Ampel geaendert, bzw. generiert wird
     *
     */
    public void gruen()
    {
    
    
    
    }
    
    /**
     * Method weiter
     *
     */
    public void weiter()
    {
    
    
    
    }
    
    /**
     * Method zeichne
     *
     */
    public void zeichne()
    {
        meinBildschirm.loescheAlles
        gehause.zeichne();
        ROT.zeichne();
    
    }
    
    
}