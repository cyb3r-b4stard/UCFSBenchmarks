import static info.utils.io.*;
import static info.graphics.Color.*;
import static info.graphics.Tools.*;
import static java.lang.Math.*;

/**
 * #### ###### ####### ##### ###### ###### ###
 * 
 * @######  ####### #######
 * @####### ##/##/####
 */
public class Compte {

    private int numero;
    private String titulaire;
    private double solde;
    private static int numeroSuivant;
    
    public Compte(String nom)
    {
        this.titulaire = nom;
        this.solde = 0;
        this.numero = this.numeroSuivant;
        Compte.numeroSuivant ++;
    }
    
    public Compte(String nom, double solde)
    {
        this.titulaire = nom;
        this.solde = solde;
        this.numero = this.numeroSuivant;
        Compte.numeroSuivant ++;
    }
    
    public Compte(Compte c)
    {
       this.titulaire = c.titulaire;
       this.solde = c.solde;
       this.numero = this.numeroSuivant;
       Compte.numeroSuivant ++;
    }
    
    public double getSolde()
    {
        return this.solde;
    }
    
    @Override
    public String toString()
    {
        String res = "numero : " + this.numero + " nom : " + this.titulaire + " solde : " + this.solde;
        return res;
    }
    
    public void effectuerRetrait(double montant)
    {
        this.solde -= montant;
        System.out.println("numero : " + this.numero + " retrait : " + montant + " nouveau solde : " this.solde);
    }
    
    public void effectuerDepot(double montant)
    {
        this.solde -= montant;
    }

}