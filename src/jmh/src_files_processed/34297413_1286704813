import java.io.*;
class Overloading
{
    public static void area(int l,int b)
    {
        System.out.println("area of rectangle="+l*b);
    }
    public static void area(double r)
    {
        System.out.println("area of circle+"+3.14*r*r);
    }
    public static void area(double b,double h)
    {
        System.out.println("area of triangle="+ba*h)
    }
    public static void main() throws IOException
    {
        BufferedReader br = new BufferedReader (new InputStreamReader(System.in));
        int ch,l,b;
        double r,ba,h;
        System.out.println("1.area of rectangle");
        System.out.println("2.area of circle");
        System.out.println("3.area of triangle");
        ch=Integer.parseInt(br.readLine());
        switch(ch)
        { 
           case 1: System.out.println("enter l and b");
                   l=Integer.parseInt(br.readLine());
                   b=Integer.parseInt(br.readLine());
                   area(l,b);
                   break;
           case 2: System.out.println("enter r");
                   r=Double.parseDouble(br.readLine());
                   area(r);
                   break;
           case :  System.out.println("Enter base an height");
                   ba=Double.parseDouble(br.readLine());
                   area(ba,h);
                   break;
           default:System.out.Println("wrong choice");
        }
    }
}
