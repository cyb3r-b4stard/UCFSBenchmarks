
public class RECHTECK {
    
    private int länge;
    private int breite;
    private String farbe;
    
    public RECHTECK () {
        länge=100;
        breite=200;
        farbe="rot";
    }
    
    public RECHTECK(int l, int b, String f) {
        länge=l;
        breite=b;
        farbe=f;
    }
    
    public void längeSetzen (int neueL) {
       länge = neueL    
    }
    
    public void breiteSetzen(int neueB) {
        breite = neueB
    }
    
    public int flächeBerechnen() {
        int a = länge*breite;
        return a;
    }
    
    public int umfangBerechnen() {
        int u = 2*länge + 2*breite;
        return u;
    }
    
    public double diagonalenLänge() {
        double d = Math.sqrt(länge*länge + breite*breite);
        return d;
    }
}
