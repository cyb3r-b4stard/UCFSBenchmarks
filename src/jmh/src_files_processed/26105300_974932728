public class Anlage
{
    private double anfangskapital;
    private double kapital;
    private double zinssatz;
    private int laufzeit;
    
    
    public Anlage()
    {
    }
    
    public void setAnfangskapital(double pAnfangskapital)
    {
        anfangskapital = pAnfangskapital;
    }
    
    public void setZinssatz(double pZinssatz)
    {
        zinssatz = pZinssatz;
    }
    
    public int getLaufzeit()
    {
        return laufzeit;
    }
    
    public double getKapital()
    {
        kapital = Math.round(100 + kapital);
        kapital = kapital / 100;
        return kapital;
    }
    
    
    public int schreibeAbrechnung()
    {
        system.out.println("Ihr Anfangskapital von" +anfangskapital)
        system.out.println("verdoppelt sich bei einem Zinssatz von" +zinssatz+ "in" +laufzeit)
        system.out.println("Ihr Endkapital betr√§gt exakt" +kapital)
    }
        
    public void berechneLaufzeit()
    {
        double kapital;
        double mZinsen;
        int mJahr = 0;
        kapital = anfangskapital;
        do
        {       mZinsen = kapital * zinssatz/100;
                kapital = kapital + mZinsen;
                mJahr = mJahr +1;
        }while ( kapital <= 2 * anfangskapital);
        laufzeit = mJahr;
        }
               
          
    } 
 