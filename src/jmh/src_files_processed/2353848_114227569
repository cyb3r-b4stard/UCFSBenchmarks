public class Registration extends JPanel implements ChooserListener
{
    private JLabel Staffregistr , label1, label2 , label3 ,label4;
    private JButton enter , clear;
    private JTextField staffid, staffname ,depid;
    private JRadioButton one;
    
   public void Registraton () {
    setLayout (new GridLayout());
    Staffregistr = new JLabel ("Staff Registration");
    label1 = new JLabel ("name");
    label2 = new JLabel ("Department ID");
    label3 = new JLabel ("PayGrade");
    staffid = new JJTextField ("Saff Number" , 7);
    staffname = new JTextField("Staff Name" , 7);
    depid = new JTextField ("Dep ID" , 7);
    enter = new JButton ("ENTER");
    clear = new JButton ("CLEAR");
    1 = new JRadioButton ("1");
    2 = new JRadioButton ("2");
    3 = new JRadioButton ("3");
    4 = new JRadioButton ("4");
    vis();
    }
    public void addField(String label, JComponent field , JComponent button) {
        JPanel form = new JPanel
        form.add(staffid);
        form.add(Staffregistr);
        form.add(label1);
        form.add(label2);
        form.add(label3);
        form.add(staffid);
        form.add(staffname);
        form.add(depid);
        form.add(enter);
        form.add(clear);

        add(form);
       
    }
   
    public void vis(){
       addField("Staff Number", new JTextField(8));
       addField("Name", new JTextField(20));
       addField("Department ID", new JTextField(12));
       setVisible(true);
       setTitle("Staff Registration");
   
}

public void tell(Object o) {
   
   
}
}