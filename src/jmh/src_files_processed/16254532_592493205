public class Powers2NonInt
{
	public static void main(String[] args)
	{
	    int base = 2;
	    
	    System.out.print("The powers of 2 for exponents 0 through 10 are: ");
	    System.out.println("2 to the x power" + "\t" + "Answer");
	    System.out.println("" + base ^= 0 + "\t" + base + "");
	    System.out.println(base ^= 1 + "\t" + base);
	    System.out.println(base ^= 2 + "\t" + base);
	    System.out.println(base ^= 3 + "\t" + base);
	    System.out.println(base ^= 4 + "\t" + base);
	    System.out.println(base ^= 5 + "\t" + base);
	    System.out.println(base ^= 6 + "\t" + base);
	    System.out.println(base ^= 7 + "\t" + base);
	    System.out.println(base ^= 8 + "\t" + base);
	    System.out.println(base ^= 9 + "\t" + base);
	    System.out.println(base ^= 10 + "\t" + base);
	}
}