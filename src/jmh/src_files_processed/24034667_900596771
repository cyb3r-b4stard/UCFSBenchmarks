import java.util.*;

/**
 * # ##### ## ######## ## ########### #### #### ## #####.
 * ##### ### ######## ### ######## ######### ## # ##### ####.
 * ## #### #######, #### ####### ##### ## #.
 * 
 * @###### ##### #. ###### ### ####### #######.
 * @####### ####.##.##
 */
public class Notebook
{
    private ArrayList<String> notes;
    private ArrayList<Integer> nums;

    /**
     * Perform any initialization that is required for the
     * notebook.
     */
    public Notebook()
    {
        notes = new ArrayList<String>();
        nums = new ArrayList<Integer>();
        nums.add(99);
    }

    /**
     * Store a new note into the notebook.
     * @param note The note to be stored.
     */
    public void storeNote(String note)
    {
        notes.add(note);
    }

    /**
     * @return The number of notes currently in the notebook.
     */
    public int numberOfNotes()
    {
        return notes.size();
   }
    
    public void deleteNote(int noteNumber)
    {
        System.out.println("You have deleted the note: " + notes.get(noteNumber));
        notes.remove(noteNumber);
    }
    
    public void showAllNotes()
    {
    int currNote = 0; 
    
    while (currNote < notes.size())
    {
       
        showNote(currNote);
        currNote = currNote + 1;
    }
    }
    
    public void searchNotes(String keyword)
   {
       /* USE: notes.get(noteNum).contains(keyword) 
        
        */
          int whichNote = 0; 
          
          String aNote = notes.get(whichNote);
          
          while(aNote.contains(keyword))
          {
            System.out.println(aNote)
          }
          

        /*   if so print it 
        *   if NOT, skip it 
       if(notes.contains(keyword)  == true)
        {
           System.out.println("."); 
           return true; 
        }
       else
       {
        return false; 
       }
       */ 
   }
   
    /**
     * Show a note.
     * @param noteNumber The number of the note to be shown.
     */
    public void showNote(int noteNumber)
    {
        if(noteNumber < 0) {
            System.out.println("[" + noteNumber + "]: " + " is too low to be a note");
        }
        else if(noteNumber < numberOfNotes()) {
            System.out.println("[" + noteNumber + "]: " + notes.get(noteNumber));
        }
        else {
            System.out.println("[" + noteNumber + "]: " + "is a too high too be a note");
        }
    }
}