import java.io.*;
class TriangleMenu
{
    public static void main(String args[]) throws IOException
    {
        BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
        double area, a, b, c, s;
        int opt;

        do
        {
            System.out.println("\n\n\tSERIES MENU OPTIONS: ");
            System.out.println("\n1.OPTION 1: Enter Sides of Triangle to Calculate Area");
            System.out.println("\n2.OPTION 2: EXIT Program");
            opt=Integer.parseInt(br.readLine());

            switch(opt)
            {
                case 1:
                System.out.print("Enter the Length of Side 1: ");
                a=Double.parseDouble(br.readLine());
                System.out.print("Enter the Length of Side 2: ");
                b=Double.parseDouble(br.readLine());
                System.out.print("Enter the Length of Side 3: ");
                c=Double.parseDouble(br.readLine());
                if(a+b>c && b+c>a && a+c>b)
                {
                    if(a*a==b*b+c*c || b*b==c*c+a*a || c*c==a*a+b*b)
                    {
                        System.out.println("Right-Angled Triangle.");
                        area;

                    }
                    else if(a==b && b==c)
                    {
                        System.out.println("Equilateral Triangle.");
                        area=Math.sqrt(3/4)*a*a;
                        System.out.println("Area: "+area);
                    }
                    else 
                    {
                        System.out.println("Other Triangle.");
                        s=a+b+c/2;
                        area=Math.sqrt(s*(s-a)*(s-b)*(s-c));
                        System.out.println("Area: "+area);
                    }
                }
                else
                    System.out.println("ERROR! Triangle is NOT POSSIBLE");
                break;

                case 2:
                System.out.println("Program Exitted");
                break;

                default:
                System.out.println("ERROR! Wrong Choice Entered");

            }
        } while(opt!=2);
    }
}

