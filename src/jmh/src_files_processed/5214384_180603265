public class Balloon

{ 
  private double volume; 
  
  public Balloon()
  { 
      
      volume = 0;
      
      
      
  }    
   public double getRadius()
    {  double radius = Math.pow((3.0*volume/4.0)/Math.PI,(1.0/3.0));
        return radius;
    }
  public double getVolume()
  { 
      return volume;
    
  }    
  public void addAir(double volumeToAdd)
  {
      volume = volume +volumeToAdd;
}
 public void releaseAir( double volumeToRelease)
  {  volume = volume - volumeToRelease;
}
public double volumeToAddToReachRadius(double radius)
{ double newVolume = ((3.0/4.0)*Math.PI)*Aath.pow(radius,3.0);
    double volumeNeeded = newVolume - volume;
    return volumeNeeded;
}
  