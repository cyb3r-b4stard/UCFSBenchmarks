public class Ciclos
{
    public static void main (String args [])
    {
        
        int contador = 1;
        int suma = 0;
        
        while ( contador <= 100)
        {
            suma += contador;
            contador++;
            
        }
        
        System out.println ("Suma =" +suma);
        
        
        int contador = 1;
        int suma = 0;
        
        do {
            
            suma += cotador;
            contador++;
            
        } while (contador <= 100);
        
             System.out.println ("suma=" +suma );
             
         contador = 1;
         suma = 0;
         
        for (int i=1; i <= 100; i++ )
        {
            suma += i;
        }
        
        System.out.println("suma =" + suma);

      }
}