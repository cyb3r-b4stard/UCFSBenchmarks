import java.util.ArrayList;

public class CD
{
    
    private int cdnumber;
    private String title;
    private int year;
    private ArrayList<Track> trackList;

    /**
     * Constructor for objects of class CD
     */
    public CD(int year, String title, int cdnumber)
    {
        this.year = year;
        this.title = title;
        this.cdnumber = cdnumber;
        trackList = new ArrayList<Track> ();
        
        
    }
    
    public int getYear()
    {
        return year;
    }
    
    public int getCDNumber()
    {
        return cdnumber;
    }
    
    public String getTitle()
    {
        return title;
    }
    
    public void setTrack(Track trackList)
    {
        this.trackList.add(trackList);
    }
    
    public Track getLongestTrack()
    {
        int playingTime = 0;
        Track longestTrack = null;
        for(Track number : trackList)
        {
           if(number.getPlayingTime() > playingTime)
        {
           playingTime = number.getPlayingTime();
           longestTrack = number;         
        } 
       
    } 
    System.out.println("Longest playing time: " + longestTrack.getPlayingTime());
    return longestTrack; 
    
}

public int getAveragePlayingTime()
    {
    int totalPlayingTime = 0;
        
        for(Track list : trackList)
        {
          totalPlayingTime = list.getPlayingTime() + totalPlayingTime;       
               
        } 
    return totalPlayingTime/trackList.size();

}

public int getAmountOfTracks(int time)
{
    int numberOftracks = 0;
    for(Track track : trackList)
    {
      if(time<track.getPlayingTime())
      {
         numberOftracks++;
      }
    }
    return numberOftracks;

}

}

}