    public void getInfo(){   
        while (x != 2){
            System.out.println("Add term? (1 - add; 2 - exit");
            x = s.nextInt();
            if (x == 1){
                m.getInfo();
                map.put(m.accDegree(),m);
            }   
        }

    }

