public class CustomerDatabase
{
    public ArrayList CustomerList;
    public int customerCount;
    public int zipCount;
    public CustomerDatabase(){
        customerCount = 0;
        zipCount = 0;

        ArrayList<Customer> CustomerList = new ArrayList<Customer>();
    }

    public void readCustomerData(String filename){
        ArrayList<Customer> list = new ArrayList<Customer>();

        try{
            File f = new File(filename);
            Scanner sc = new Scanner(f);
            String text;

            while(sc.hasNext()) {
                text = sc.nextLine();
                Customer blah = new Customer(text);
                list.add(blah);
            }
            sc.close();
        }
        catch(IOException e) {
            System.out.println("Failed to read the data file: " + filename);
        }
        CustomerList = list;
    }

    public void addCustomer(Customer c){;
        CustomerList.add(c);
    }

    public int countCustomers(){
        customerCount = CustomerList.size();
        return customerCount;
    }

    public int countCustomers (int zip){
        String random = CustomerList.get(i)

        for(int i = 0; i < CustomerList.size(); i++ ){
            if (CustomerList.get(i).contains(zip)){
                zipCount++;
            }
        }
        return zipCount;

    }

