 */
public class Door
{
    private String state; 
    private double height; 
    private double width; 
    private String room; 
    private String locked; 
    private String lock type; 

    /**
     * Constructor for objects of class door
     */
    public Door()
    {
        state  = "closed";
        width = 1;
        height = 2.5;
        room = "bedroom";
        locked = "locked";
        lcok type = "bolt";
    }

    /**
     * this tell us whether the door is open or closed
     * @return state returns if the door is open or closed
     */
    public String getState()
    {
        return state;
    }
    
    /**
     * this tells us what the height of the door is
     * @return state returns the door height in meters
     */
    public double getHeight()
    {
        return height;
    }
    
     /**
     * this tells us what the width of the door is
     * @return state returns the door width in meters
     */
    public double getWidth()
    {
        return width;
    }
    
    /**
     * this tells us what room the door leads to
     * @return state returns the room the door leads to
     */
    public String getRoom()
    {
        return room;
    }
    
    /**
     * this tells us if the door is locked or not
     * @return state returns if the door is locked or not
     */
     public String getlocked()
    {
        return locked;
    }
}

