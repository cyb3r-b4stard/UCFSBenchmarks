import objectdraw.*;
import java.awt.*;

public class OrnamentYinHu
{
    private FramedOval string;
    private FramedRect connection;
    private FilledOval level3;
    private FilledOval level2;
    private FilledOval level1;
    private FilledOval cakeSurface; 
    
    private double stringHeight;
    private double connectionWidth;
    private double normalHeight;
    
    public OrnamentYinHu(double x, double y, double width,
                      double height, DrawingCanvas canvas)
    {
        stringHeight = 5.0;
        connectionWidth = 2.0;
        
        normalHeight = height*(1/5.0);
        
        string = new FramedOval(x-(width/2), y, width,
                                stringHeight, canvas);
        
        connection = new FramedRect(x, y+stringHeight,
                                    connectionWidth, 
                                    normalHeight, 
                                    canvas);
        
        level1 = new FilledOval(x-(width/2),
                     y+stringHeight+normalHeight*1.5,
                                width, normal Height,
                                canvas);
                                   
        cakeSurface = new FilledOval(x-(width/2), 
                            y+stringHeight+normalHeight,
                                     width, normalHeight,
                                     canvas);
        
    }
    
    public void switchOn()
    {
        level1.setColor(Color.ORANGE);
        cakeSurface.setColor(Color.RED);
}