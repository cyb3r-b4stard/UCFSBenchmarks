

public class Trajekt {
    
   boolean [] sedistaIMesta;
   int ukupanBrojSedista; 
   
Trajekt (int ukupanBrojSedista, int ukupanBrojMesta) {
    
    this.ukupanBrojSedista = ukupanBrojSedista;   
    
       if (ukupanBrojSedista <0 || ukupanBrojMesta<0) {
            sedistaIMesta = new boolean [60];
            System.out.println ("Greska!");
        }
       else {
           sedistaIMesta = new boolean [ukupanBrojSedista + ukupanBrojMesta];
        }
       
       for (int i=0; i<sedistaIMesta.length; i++) {
           sedistaIMesta [i] = true;
        }
        
}

void uvestiMestoZaAutomobil (int redniBrMesta) {
   
    if (sedistaIMesta [ukuanBrojSedista + redniBrojMesta] == true )
        sedistaIMesta [ukuanBrojSedista + redniBrojMesta] = false;
    if (sedistaIMesta ([ukuanBrojSedista + redniBrojMesta + 1] == true)
        System.out.println ("Naredno mesto je slobodno!");
    else {
        System.out.println ("Greska!"); 
    }
    if ( redniBrjMesta == sedistaIMesta.length - 1) System.out.println ("Greska!");
     }
    
    
    
}





}