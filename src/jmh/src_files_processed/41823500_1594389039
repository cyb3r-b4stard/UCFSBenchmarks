import java.util.*;
public class JavaAdv3
{
    public static final Scanner kb = new Scanner( System.in );
    public static void main ( String[] args )
    {
        System.out.print( " chicken, steak, salad, hamburger, EVERYTHING, OR GO HOME? --> " );
        String response = kb.nextLine();
        part1();
    }
    public static void part1()    
    {
            System.out.println( "Pick up some chicken. Do you want to eat it with your HAND OR use a FORK AND KNIFE or next choice?. " );
            String response2 = kb.nextLine();
            if (response2.equals( "HAND"))
            {
                part2();
            }
            else
            {
                System.out.println("Pick up a FORK AND KNIFE and begin eating.");
            }
        }
       public static void part2()
       {
           System.out.println("If you are using your HAND, do you want to begin eating or get something else?");
           STring response3=kb.nextline();
           if (response3.equals("begin eating"))
           {
               System.out,println("Enjoy your food.");
            }
            else if (response3.equals("get something else")
            {
                part1();
            }
            else
            {
                System.out.println("Go Home.");
        }
    }
}