    static Scanner sc = new Scanner(System.in);
    static QUIZ1 q1 = new QUIZ1();

    public void getInput()
    {
        int x;
        System.out.print("Enter Number: ");
        x = sc.nextInt();
        q1.switchStatement(q1.returnInput());
    }
    
    public void returnInput()
    {
        return x;
    }
    
    public void switchStatement()
    {
        switch(e)
        {
            case 1:
            {
                System.out.print("SUM: " + q1.getSum(q1.get1stNumber(),q1.get2ndNumber()));                
                break;
            }










            case 2:
            {
                System.out.print("DIFFERENCE: " + q1.getDiff(q1.get1stNumber(),q1.get2ndNumber());
                break;
            }
            case 3:
            {
                System.out.print("PRODUCT: " + q1.getProd(q1.get1stNumber(),q1.get2ndNumber()));
                break;
            }
            case 4:
            {
                System.out.print("QUOTIENT: " + q1.getQuo(q1.get1stNumber(),q1.get2ndNumber()));
                break;
            }
            default:
            {
                System.out.print("INVALID INPUT");
            }
        }
    }
    
    public int get1stNumber()
    {
        System.out.print("Enter First Number: ");
        return sc.nextInt();
    }
    
