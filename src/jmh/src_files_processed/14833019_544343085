
import sum.kern.*;
/**
 * @###### 
 * @####### 
 */
public class Hauptprogramm
{
    Bildschirm derBildschirm;
    Maus dieMaus;
    Kugel meineKugel;
    Stift hatStift;

    public Hauptprogramm()
    {
        derBildschirm = new Bildschirm(1000,800);
        dieMaus = new Maus();
        meineKugel = new Kugel();
        hatStift = new Stift();
    }

    public void fuehreAus()
    {
        meineKugel.zeichne();

        while (!dieMaus.istGedrueckt())
        {
            meineKugel.bewege();
        }

    }
    
    public void zeichne()
    {
        hatStift.zeichneKreis(30);

    }
    public void loesche() this.loesche
    {
        hatStift.radiere();
        this.zeichne();
        hatStift.normal();

    
    }
    {
        dieMaus.gibFrei();
    }
}