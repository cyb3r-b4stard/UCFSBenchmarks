    public void use() {
        char choice;
        while ((choice = readChoice()) !='x')
        {
            switch(choice){
            case 's': sell();
            break;
            case 'r': restock();
            break;
            case 'v': viewStock();
            break;
            case 'c': viewCash();
            break;
            case 'p': pruneProducts();
            break;
            default: help();
            break;
    }
}
}
