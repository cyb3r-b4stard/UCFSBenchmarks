import java.util.Scanner;
public class ProgrammingChallengesQ13 {
public static void main(String args[]){
	Scanner x = new Scanner(System.in);
    int length;
	int width;
	int radius;
	double answer;
	System.out.println("What is the length of the lawn?");
	length = x.nextInt();
	System.out.println("What is the width of the lawn?");
	width = x.nextInt();
	System.out.println("What is the radius of the flower bed?");
	radius = x.nextInt();
	answer=((length*width)-((radius*radius)*3.14159));
	System.out.println("Turf cost = " +(answer*1.2));
	System.out.println("Grass seed cost = "+((answer*0.2)+60));
