package lea.kovac.oop.projekt.apl;
import java.util.*;



public class Chat
{
    private ArrayList<String> tekst;
    private ArrayList<Korisnik> sudionici;
    private int id;
    private static int x=0;


    public Chat(ArrayList<Korisnik> k, ArrayList<String> t)
    {
       id=x;
       x++;
       sudionici=k;
       tekst=t;
       
    }

  
    public void enter(Korisnik k, String t)
    {
       tekst.add(k.getKorIme()+": "+t+"\n");
    }
    public String toString() {
        String g="";
        for (String s:tekst) g+=s;
        return g;
}