
public class Estudiante
{
   private String asignatura;
   private String profesor;
   private double[] notas;
   private int indice;
   public Estudiante()
   {
     asignatura=new String();
     profesor = new String();
     notas = new double[10];
     indice = 0;
   }
   
   public Estudiante(String asignatura, String profesor)
   {
     setAsignatura(asignatura);
     setProfesor(profesor);
     notas = new double[10];
     indice = 0;
   }
   
   public String getAsignatura()
   {
     return asignatura;
   }
   public void setAsignatura(String asignatura)
   {
     this.asignatura = asignatura;
   }
   
   public String getProfesor()
   {
     return profesor;
   }
   public void setProfesor(String profesor)
   {
     this.profesor = profesor;
   }
   
   public void llenarEstudiante(double numero)
   {
     if(indice<notas.length)
     {
       notas[indice] = numero;
       indice++;
     }
     else
     {
       System.out.println("Su arreglo esta completo");
     }
   }
   public void listarNotas()
   {
       for (int i=0;i<notas.length;i++)
       {
         System.out.println("nota"+(i+1)+": "+notas[i]);
        }
   }
   
   public double promedio()
   {
       double suma =0;
     for (int i=0;i<notas.length;i++)
     {
        suma = suma+notas[i];
     }
     double promedio = suma/ notas.length;
     return promedio;
   }
   
   public String estado()
   {
     if (promedio()>=4.0)
     {
        return "APROBADO!";
     }
     else
     {
        return "Reprobado";
     }
   }
   
   public void printEstudiante()
   {
     System.out.println("\n-- DATOS DE ESTUDIANTE");
     System.out.println("Asignatura: "+getAsignatura());
     System.out.println("Profesor: "+getProfesor());
     listarNotas();
     System.out.println("Promedio es: "+promedio());
     System.out.println("Usted a "estado());
   }
}