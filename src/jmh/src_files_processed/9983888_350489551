import java.util.Scanner;

public class RepertoireTelephonique 
{
    private int nMax;
    private int nbCorrespondant;
    private Correspondant[] tab_correspondants[]; 
    private boolean bool;
    
    public RepertoireTelephonique(int n)
    {
        this.nMax = n;
        this.nbCorrespondant = 0;
    }
    
    public RepertoireTelephonique(int nMax, int nbCorrespondant)
    {
        this.nMax = nMax;
        this.nbCorrespondant = nbCorrespondant;
    }
    
    public void addCorrespondant(Correspondant C, int i)
    {
        if (i==nMax)
        {   bool = false;
            System.out.println("l'ajout d'un utilisateur est imposssible");
        }
        else
        {   
            System.out.println("nom du correspondant :" +C.getNom());
            System.out.println("num√©ro du correspondant :" +C.getNumero());
            nbCorrespondant++;
            bool = true; 
        }
    }
   
       public String getNumero(Correspondant C)
   
    {
       return C.getNumero();
    }
    
    public int getNbCorrespondant()
    {
        return this.nbCorrespondant;
    }
    
    public int getCorrespondantTries()
    {
    return this.nbCorrespondant;
    }
    
    public void affiche()
    {
        System.out.println(this.getNbCorrespondant() + " correspondants dans le repertoire telephonique :");
        
        for(int i=0;i<nbCorrespondant;i++)
        
        {System.out.println ("voici le tableau de correspondants: " +this.tab_correspondants[i]);
        System.out.println("");
        }
    }
    
    
    public static void main(String args[], void addCorrespondant)
    {
        Correspondant C1 =new Correspondant("toto","05 49 45 44 42");
        System.out.println("affiche le tableau de correspondant C1 :" +C1);

        RepertoireTelephonique RT=new RepertoireTelephonique(5);
       

    }  
}
