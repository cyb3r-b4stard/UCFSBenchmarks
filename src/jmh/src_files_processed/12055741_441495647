import java.util.Scanner; 
public class Program27{
    public static void main (String args []){
        {Scanner sc= new Scanner(System.in);
            String number;
            double average;
            int i, num,sum=0;
            JOptionPane.showMessageDialog(null,"please enter 9 scores","",JOptionPane.PLAIN_MESSAGE););
             for(i=1; i<=9;i++)
             {
                 number=JOptionPane.showInputDialog("Enter number #"+i);
                 num=Integer.parseInt(number);
                 sum=sum=num;
                }
                average=sum/9.0;
                JOptionPane.showMessageDialog("The averageof the 9 numbers is"+average);
            }
        }
    }
                 
            
            