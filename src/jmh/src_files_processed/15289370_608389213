public class Tp2 {

    public static boolean estTypeAlphabetique ( String chaine ){
        
        boolean b=chaineEstDansIntervalle(chaine,'A','z');
        return b;
    }
    public static boolean chaineEstDansIntervalle ( String chaine, char cMin, char cMax ){
        boolean intervalle=true;
        int i=0;
        if(chaine==null ||chaine=="" ){
            intervalle=false;
        }else if(chaine!=null&& chaine!=""){
        while(i<chaine.length()){
            if(chaine.charAt(i)<cMin || chaine.charAt(i)>cMax){
                
                intervalle=false;
            }
            i++;
        }
    }
    return intervalle;
    }
    public static boolean dateEstValide ( int jour, int mois, int annee ){
        boolean b=true;
        if(mois<1 || mois>12 || jour<1 || jour >31 || annee <=0 ){
            b=false;
        }else if( mois%2==0 && mois!=8 && mois!=12 && jour>30 ){
                b=false;
            }else if(mois==2 &&  jour >29){
                b=false;
            }else if( mois==2 &&( annee%4!=0 && annee %100!=0 && annee%400!=0)&& jour >28 ){
                b=false;  
            }
        return b;
    }
    public static boolean dateNaissanceEtudiantEstValide ( String chaine ){
        
        boolean c=estTypeNumerique (chaine);
         String jour;
         String mois;
         String annee;
        int j;
        int m;
        int an;
         boolean b;
        
        if(c==true && chaine.length()==6  ){
          jour=chaine.substring(0,2);
         mois=chaine.substring(2,4);
         annee=chaine.substring(4,6)
          j= Integer.parseInt(jour);
         m= Integer.parseInt(mois);
         an=Integer.parseInt(annee);
         b=dateEstValide (j,m,an);
            if(b==false && m>=1 && m<=62 ){
         b=true;
        
        }else if(b==true && an<20 || an>89){
            b=false;
        }
    }
        
        
        return b;
    }
    public static boolean codePermanentEstValide ( String chaine ){
        boolean b=true;
        return b;
    }
    public static boolean estTypeNumerique ( String chaine ){
        boolean b=chaineEstDansIntervalle(chaine,'0','9');
        return b;
    }
    public static void main ( String [] str ){
    }

} 
