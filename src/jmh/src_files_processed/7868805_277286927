import java.util.Scanner;

public class Birthday_Death{
    public static void main (String []args){
        Scanner reader = new Scanner(System.in);
        
        String monthText;
        String dateText;
        String yearText;
        
        System.out.print("Enter your birth month: ");
        int month = reader.nextInt();
        while(month <= 0){
            System.out.print("Enter your birth month: ");
            month = reader.nextInt();
        }
        
        System.out.print("Enter your birth date: ");
        int date = reader.nextInt();
         while(date <= 0){
            System.out.print("Enter your birth month: ");
            date = reader.nextInt();
        }
        
        if(month == 1){
            monthText = "drowning on ";
        }
        if(month == 2){
            monthText = "suffocating on ";
        }
        if(month == 3){
            monthText = "falling off of ";
        }
        if(month == 4){
            monthText = "choking on ";
        }
        if(month == 5){
            monthText = "a sniper attack on ";
        }
        if(month == 6){
            monthText = "whipping on ";
        }
        if(month == 7){
            monthText = "slaughter on ";
        }
        if(month == 8){
            monthText = "decapitation on ";
        }
        if(month == 9){
            monthText = "the electric chair on ";
        }
        if(month == 10){
            monthText = "Batman on ";
        }
        if(month == 11){
            monthText = "";
        }
        if(month == 12){
            monthText = "";
        }
        
        if(date <= 31){
            dateText = "the side of the road.";
            if(date <= 28){
                dateText = "";
                if(date <= 24){
                    dateText = "";
                    if(date <= 20){
                        dateText = "";
                        if(date <= 16){
                            dateText = "";
                            if(date <= 12){
                                dateText = "";
                                if(date <= 8){
                                    dateText = "";
                                    if(date <= 4{
                                        dateText = "";
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
        
        System.out.println("You died by " + monthText + dateText);
    }
}
