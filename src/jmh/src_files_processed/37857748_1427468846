import java.util.Scanner;
public class distanceTester
{
   public static void main(String[] args)
   {
   Scanner scan = new Scanner(System.in);
   System.out.println("Enter time and velocity: \n")
   Distance ball = new Distance(scan.nextDouble(), scan.nextDouble());
   System.out.println("Would you like to enter physics helper? (1 for yes)");
   double option = scan.nextDouble();
   if(option == 1)
   {
       System.out.println("A ball is hit by a player at an angle of 45 degrees above the horizontal. Enter values into the constructor for the initial velocity and time to determine information regarding the objects distance or max height.\n");
       System.out.println("Enter 2 for max height and 3 for distance");
       double option1 = scan.nextDouble();
       if(option1 == 2)
       {
           ball.maxHeight();
           System.out.println("The max height is " + ball.getHeight());
        }
        else if(option1 == 3)
        {
            ball.calcDistance();
            System.out.println("The distance is " + ball.getDistance());
        }
       System.out.println("Thanks for using physics helper enter new values and start again to receive more help.");
    }
}
}