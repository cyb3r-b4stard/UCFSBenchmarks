import java.util.ArrayList;
import java.util.Iterator;

/**
 * ####### ##### ######## ###########
 * 
 * @######  #### ######### 
 * @####### ## #### ####
 */
public class Slinger
{
    private ArrayList<Rechthoek> mijnSerie;

    /**
     * Constructor van de klasse Slinger
     */
    public Slinger()
    {
        mijnSerie = new ArrayList<Rechthoek>();
    }

    /**
     * methode voor het toevoegen van een Rechthoek aan de Slinger
     */
    public void voegtoe(Rechthoek rechthoek)
    {
        mijnSerie.add(rechthoek);
    }
    
    public Rechthoek geefEersteRechthoek()
    {
        Rechthoek antwoord = new Rechthoek();
        return antwoord;
    }
    
    public int getAmount()
    {
        return mijnSerie.size();
    }
    
    public int getlengte()
    {
        lengteSlinger = 0;
        for(Rechthoek mijnRechthoek : mijnSerie)
        {lengteSlinger += mijnRechthoek.getLengte()}
        return lengteSlinger
    }
}