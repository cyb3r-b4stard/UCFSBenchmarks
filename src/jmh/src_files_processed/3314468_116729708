import java.util.*; 
public class Dice {
    public static void main(String[] args) throws Exception {
        System.out.println("This is guessing game where I, a robot, will roll a dice") ;
        System.out.println("and you, a human, will guess what I rolled.") ;
        Scanner console= new Scanner(System.in) ;
        Random generator= new Random() ;
        System.out.print("What is your first guess? ") ;
        int guess=console.nextInt() ;
        int count=1 ;
        while (count<7) {
            System.out.println("Count is: "+count) ;
            count++
        }
        int roll=-1 ;
        while (roll != guess) {
            roll=generator.nextInt(6)+1 ;
            count++ ;
        }
        
        System.out.println("It took "+count+" times to guess my number, IDIOT!") ;
    }
}
