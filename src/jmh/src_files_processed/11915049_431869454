public class ex1tp1
{
    public static void Convertir(int a)
    {
        int x = a/3600;
        int y = (x%3600)/60;
        int z = (x%3600)%60;
        System.out.Println( x + " heures " + y + " minutes " + z + " secondes ");
    }
   
    public static void main (String[] args) 
        {
            Convertir (9999);
}