
/**
 * ##### # ########### ## ##### #### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Item
{
    private int highestBid;
    private String itemDes;
    
    private int increment;
    
    public Item(String description)
    {
        itemDes = description;
        increment = 10;
    
    }
    
    public int getBid()
    {
        return highestBid;
    }
    
    public String getDescription()
    {
        return itemDes;
    }
    
    public void setBid(int sBid)
    {
       if (sBid > highestBid && sBid - highestBid >= increment ) {
            highestBid = sBid;
        }
        else {
            System.out.println("setBid bid was too small: " + sBid " minimum bid has to be: " + highestBid + increment);
        } 
    }
}