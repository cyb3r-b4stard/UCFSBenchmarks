public class Message_5_8
{
    public static void main(int value)
    {
        System.out.println("Entered value is"+value);
        switch(value)
        {
            case 1:
            System.out.println("Hi");
            break;
            case 2:
            System.out.println("Hello");
            break;
            case 3;
            System.out.println("smile, have a good day");
            break;
            default:
            System.out.println("No match found");
        }
    }
}
        