 import sum.kern.*;
import sum.werkzeuge.*;

public class KuechenuhrFilm
{
    private Bildschirm derBildschirm;
    private Uhr computerUhr;
    private Kuechenuhr uhr;
    
    public KuechenuhrFilm()
    {
        derBildschirm = new Bildschirm(900,900);
        computerUhr = new Uhr();
        uhr = new Kuechenuhr(300,300);
        int a = 0
        
    }


    public void fuehreAus()
    {
        uhr.zeichneZifferblatt();
        while (1==1)
        {
            uhr.zeichneMillsekundenzeiger();
            computerUhr.warte(1000);
            uhr.loescheZeiger();
            uhr.bewegeZeiger();
            a=a+1;
            if (a=60)
            {
                uhr.zeichneSekundenzeiger();
                computerUhr.warte(1000);
                uhr.loescheZeiger();
                uhr.bewegeZeiger();
            
            }
       }
        
    }
}
