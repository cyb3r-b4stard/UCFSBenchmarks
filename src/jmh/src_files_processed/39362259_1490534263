import java.util.Scanner;
public class Calculator
{
   public static void main (String [] args){
       Scanner reader = new Scanner(System.in);
       
       System.out.println("Enter first number: ");
       int x = reader.nextInt();
       System.out.println("Enter second number: ");
       int y = reader.nextInt();
       System.out.println("Would you like to add(1), subtract(2), multiply(3) or divide(4)(type number)?: ");
       int function = reader.nextInt();
       
       if(function == 1){
           System.out.println(x + y);
        }
       if(function == 2){
           System.out.println(x - y);
        }
       if(function == 3){
           System.out.println(x * y);
        }
       if(function == 4){
           System.out.println(x / y);
        } 
        
       System.out.println("Do you want to do another calculation? Yes(1) No(2): ");
       int yesno = reader.nextInt();
       if(yesno == 1){
           
    }
}
       