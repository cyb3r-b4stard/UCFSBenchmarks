import java.util.Scanner;

public class exercise
{
    double humanYears;
    double dogYears = humanYears * 7;

    static double user, friend; 
   
    public static void ask() {
        Scanner input = new Scanner(System.in);
        
        System.out.println("How old are you, John?");
        user = input.nextDouble();
        
        System.out.println("How old is your best friend Sarah?");
        friend = input.nextDouble();
        
        System.out.println("John, you are " + user / 7 " approximately years old in dog years, while sarah is " + friend / 7 " years old in dog years.");
    }

   
}