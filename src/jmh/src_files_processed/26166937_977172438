import java.util.*;
import java.awt.*;
import javax.swing.*;
import java.util.*;
import java.awt.event.*;
import java.awt.Color;
public class paddle implements MouseMotionListener, MouseListener
{
    private int x, y;
    private int height = 15, width = 120;
    private Color color = Color.Light_Gray

    private Wall wall;
    
    private int lastX;
    
    public paddle(int xPad, int yPad)
    {
        x = xPad;
        y = yPad;
    }
    
    public void setWall(Wall rWall)
    {
        wall = rWall;
    }
    
    public int getX()
    {
        return x;
    }
    
    public int getY()
    {
        return y;
    }
    
    public int getWidth()
    {
        return width;
    }
    
    public int getHeight()
    {
        return height;
    }
    
    public void paint(DrawingBoard board){
        Graphics2D canvas = board.getCanvas();
        canvas.setColor(color);
        canvas.fillRect(x, y, width, height);
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public int sampleMethod(int y)
    {
        return x + y;
    }
}