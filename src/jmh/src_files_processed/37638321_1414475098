public class Punto10
{
    int categoria, valor, numero_de_objetos, puntos;
    double subvalor, valor_neto, descuento;
    public Punto10()
    {
        categoria=0;
        valor=0;
        numero_de_objetos=0;
    
    }
    public void setCategoria(int pCategoria){
    
    categoria=pCategoria;
    
    }
    public int getCategoria(){
     
      return categoria;
    }
    public void setValor(int pValor){
    
      valor=pValor;
    
    }
    public int getValor(){
    
        return valor;
    
    }
    public void setNumero_de_objetos(int pNumero_de_objetos){
    
    numero_de_objetos=pNumero_de_objetos;
    
    }
    public int getNumero_de_objetos(){
    
     return numero_de_objetos;
    }
    public void proceso(){
     subvalor=valor*numero_de_objetos;
    switch(categoria){
       
        
        case 1:{
         if(numero_de_objetos>=3){
            descuento=(subvalor*20)/100;
            valor_neto=subvalor-descuento;
            } 
            
        
        
            
         break;
        }
        case 2:{
         if(valor>=45000){
            
               descuento=(subvalor*10)/100;
               valor_neto=subvalor-descuento;
         }
         break;
        }
        case 3:{
             descuento=(subvalor*10)/100;  
             valor_neto=subvalor-descuento;    
        
            }
            
         break;
         default:
         System.out.println("categoria no existente");
        }        
    
    puntos=valor_neto/10000;
    
    }
    
    public double getValor_neto(){
    
    return valor_neto;
    
    }
    public int getPuntos(){
    
    return puntos;
    
    }    
    }
    
}