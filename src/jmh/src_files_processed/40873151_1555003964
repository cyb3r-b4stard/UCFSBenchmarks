import java.util.Scanner;

public class diez
{public static void main(String[] args) {     
           Scanner sc = new Scanner(System.in);
  double A;
  double N;
  double S;
  int q;
  do{
  N=0;
  S=0;
  while (N < 10){
  System.out.println("Introduzca el número" + N+1 );
  A= sc.nextDouble();
  N=N+1;
  S=S+A;
}
  System.out.println("El resultado de la suma de los 10 números" + S);
  System.out.println("¿Quieres volver a introducir 10 números? (1=Sí/2=No)");
  q= sc.nextInt();
}  
while (q==1);
     }  
System.out.println ("Fin del programa");
}
}