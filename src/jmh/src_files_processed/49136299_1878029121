public class Oracion
{
    
    private Palabra[] S;

    
    public Oracion(String s)
    {
       String [] aux = s.split(" ");
       S= new Palabra[aux.length];
       
       for(int i=0; i<aux.length;i++)
         S[i]= new Palabra(aux[i]);
       
      
    }
    
     public Oracion(int n)
    {
      
            S= new Palabra[n];
           
    }

    
    
    public void establecerEnPosicion(int i, Palabra p){
    
        S[i]=p;
    }
    
    
    public int cantPalabras()
    {
        return S.length;
    }
    
    public Palabra palabraEnPosicion(int i)
    {
        return S[i];
    }
    
    
   
    
    /**@todo: Implemente el metodo cantPalindroams():int*/
    
    public int cantPalindromas(){
        int cont = 0;
        for (int i = 0; i < S.length; i++)
            
            for (int j = 0; j < S[0].longitud(); j++)
                
                if (S[0].palindromo())
                    cont++;
        return cont;
    }
    
    
    /**@todo: implemente el metodo nuevaOracion(b: Oracion): Oracion*/
    
    public Oracion nuevaOracion(Oracion b){
        int i = 0;
        int j = 0;
        int e = 0;
        Oracion nuevo = new Oracion(b.cantPalabras() + S.length);
        while (j < b.cantPalabras() && i < S.length){
            if (S[i] != null){
                nuevo.establecerEnPosicion(e,S[i]);
                i++;
                e++;
            }
            if (b.palabraEnPosicion(j) != null){
                nuevo.establecerEnPosicion(e,b.palabraEnPosicion(j));
                j++;
                e++;
            }
        }
        if (i < S.lenth)
            while (i < S.length){
                nuevo.establecerEnPosicion(e,S[i]);
                e++;
                i++;
            }
            else
                while (j < b.cantPalabras()){
                    nuevo.establecerEnPosicion(e,b.palabraEnPosicion(j);
                    j++;
                    e++;
                }
    }
    
    public String toString()
    {
        String salida = "";
        for (int i = 0; i < S.length; i++) {
            salida += S[i].toString()+" ";
        }
        return salida;
    }
    
    
        
       
    
}