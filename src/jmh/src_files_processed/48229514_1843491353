public class Lab4 {

    /**
     * main method (driver) to execute all the method calls properly
     *
     * @param args
     */
    public static void main(String[] args) {

        powerOfTwo(64);
    }

    /**
     * Calculates the number of grains and prints out the result per lab instructions
     */
    public static void countGrains() {
        long numGrains = 1;
        long totalGrains = 1;

        for (int numDays = 1; numDays <= 64; numDays++) {
            System.out.println("Day " +numDays+ " and you got " +numGrains+ " grains(s) of rice for a total of " +totalGrains+ " grain(s)");
            numGrains = numGrains * 2;
            totalGrains = totalGrains + numGrains;
        }
        System.out.println();

    }

    /**
     * Determines if a number is power of 2 and displays result per lab instructions
     * @param numberInput
     */
    public static void powerOfTwo (int numberInput) {
        int count = 0;
        int powerNum = 0;
        int numberPower = 1;
        while ((powerNum % 2 == 0) && (numberInput > 1)) {
            powerNum = numberPower / 2;
            System.out.println(numberInput+ " is 2 to the power of " +powerNum);
        }
        System.out.println(numberInput+ " is not a power of 2");
    }
}

}

