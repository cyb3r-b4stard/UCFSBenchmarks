public class Student
   {
   private String firstName; 
   private String lastName;
   private double GPA;
   private int gradYear;
   private double[] classGrades;
   
   public Student()
      {
      firstName = new String( " " );
      lastName = new String( " " );
      GPA = 0.00;
      gradYear = 0;
      classGrades = new double[5];
      } 
      
   public Student( String firstName, String lastName, double GPA, int gradYear,
                    double gradeEnglish, double gradeMath, double gradeScience,
                    double gradeFineArts, double gradeSocialScience )
      {
      this.firstName = firstName;
      this.lastName = lastName;
      this.GPA = GPA;
      this.gradYear = gradYear;
      this.classGrades = new double[5]; 
      this.classGrades[0] = gradeEnglish;
      this.classGrades[1] = gradeMath;
      this.classGrades[2] = gradeScience;
      this.classGrades[3] = gradeFineArts;
      this.classGrades[4] = gradeSocialScience;
      
      } 
       
   public double calcGPA() 
      {
      double total = 0.0;
      
      for( int index = 0; index < classGrades.length; index++ )
         {
         total = total + classGrades[index];   
         }
      total = total / classGrades.length;
      
      return total;    
      } 
   
   public void getLastName(Student)
   {
       return lastName;
    }
      
      
   public void setGPA( double gradeEnglish, double gradeMath, double gradeScience, 
                       double gradeFineArts, double gradeSocialScience )
      {
      this.classGrades[0] = gradeEnglish;
      this.classGrades[1] = gradeMath;
      this.classGrades[2] = gradeScience;
      this.classGrades[3] = gradeFineArts;
      this.classGrades[4] = gradeSocialScience;
      } 
      
   public String toString()
      {
      String studentInfo = new String();
      studentInfo = ("\n" + "Student's First Name is: " + firstName + "\n" +
                      "Student's Last Name is: " + lastName + "\n" +
                      "Student's Average GPA is: " + calcGPA() + "\n" +
                      "Student's Graduation Year is: " + gradYear  + "\n" );
      String gradeInfo = new String();
      for( int index = 0; index < classGrades.length; index++ ) 
         {
         gradeInfo = gradeInfo + classGrades[ index ] + " " + "\n";
         
         } 
      return studentInfo + gradeInfo;
      } 
       
   } 
     