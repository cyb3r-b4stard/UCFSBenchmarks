package Module5;
public class SpaceAlien  
{
    int AlienX;
    int AlienY;
    int lives = 1;
    int speedX = 5;
    boolean move = true;
    boolean shoot = false;
    
    int PlayerX = 240;
    int PlayerY = 450;
    public SpaceAlien(int AlienX, int AlienY)
    {
       this.AlienX = AlienX;
       this.AlienY = AlienY;
       this.lives = lives;
       this.move = move;
       if (move == true)
       {
           AlienMovement();
           return this.AlienX + this.AlienY
       }
    } 
    public void AlienMovement()
    {
       this.AlienX += speedX;
       if (this.AlienX > 500-20 || this.AlienX < 0)
        {
            speedX *= -1;   
        } 
      
        /* if (this.AlienX > PlayerX-20 && this.AlienX < PlayerX+40 && this.AlienY > PlayerX)
        {
            
        }*/
        
    }
}