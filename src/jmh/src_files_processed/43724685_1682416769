
import java.util.*;
public class NameThatCelebrity
{
    public static void main(String[] args)
    {
        Scanner console = new Scanner(System.in);
        System.out.println("Get a value for a String>>>");
        String s=console.nextLine();
        int a=s.length();
        System.out.println(a);
        System.out.println("Get a new value for s>>>");
        s=console.nextLine();
        s= s.substring(1);
        System.out.println(s);
        System.out.println("Get another value for s>>>");
        s=console.nextLine();
        s=s.substring(0,s.length()-1);
        System.out.println(s);
        System.out.println("Get a value for wordOne>>>");
        String wordOne=console.nextLine();
        System.out.println("Get a value for wordTwo>>>>");
        String wordTwo=console.nextLine();
        int wordOneLength=wordOne.length();
        int wordTwoLength=wordTwo.length();
        if (wordOneLength>wordTwoLength)
        {
            System.out.println(wordTwo + wordOne + wordTwo);
        }
        else if (wordTwoLength>wordOneLength)
        {
            System.out.println(wordOne + wordTwo + wordOne);
        }
        System.out.println("Get a value for evenString [has to have even # of characters}");
        String evenString=console.nextLine();
        int evenStringLength=evenString.length();
        if (evenStringLength%2==0)
        {
            evenString=evenString.substring(0,evenString.length()/2);
            System.out.println(evenString);
        }
        System.out.println("Get a value for a>>>");
        String c=console.nextLine();
        System.out.println("Get a value for b>>>");
        String b=console.nextLine();
        System.out.print("a=" + c + " b=" + b+" >>>>");
        c=c.substring(1);
        b=b.substring(1);
        System.out.println(c+b);
        System.out.println("Get a new value for a>>>");
        c=console.nextLine();
        String bad="bad";
        if (c.substring(0, 3).equals(bad))
        {
            System.out.println("HAS BAD");
        }
        System.out.println("Get a new value for b>>>");
        b=console.nextLine();
        b=b.substring(1);
        b=b.substring(0,b.length()-1);
        System.out.println(b);
        System.out.println("Get a new value for b");
        b=console.nextLine();
        String way="way";
        if (b.equals(way)== false)
        {
            System.out.println("No way"); 
        }
        System.out.println("Get a new value for oddString");
        String oddString=console.nextLine();
        int length=oddString.length();
        int len=length/2;
        String middle=oddString.substring(len-1,len+2);
        System.out.println("The three middle number >>>>" +middle);
        System.out.println("Name that Celebrity");
        System.out.println("Choose a difficulty level(easy,medium, or hard>>>");
        String difficulty=console.nextLine();
        
        String name="Thomas Cruise";

        for (int i=5 ; i>=0 ; i--)
        {
            if (difficulty.equals("easy"))
            {
                name = name.substring(4);
                System.out.println(name);
                System.out.println("What's your guess?>>>>");
                String guess=console.nextLine();
                if (guess.equals.(("name")))
                {
                    System.out.println("Correct! Nice Job!");
                }
                else 
                {
                    System.out.println("Your guess is wrong sorry");
                    System.out.println(" Hint: In the movie Jack reacher ");

                }

        
                if (difficulty.equals("medium"))
                {

                }

                if (difficulty.equals("hard"))
                {

                }
            }
        }

    }   
}