import java.util.* ;
public class zad02
{
    public static void main()
    {
        Scanner podaj = new Scanner(System.in);
        System.out.println("Podaj liczbę aby zsumować jej cyfry.");
        int K = podaj.nextInt();
        System.out.println("Ta liczba to: " + K + ".");
        do
        {
            int K2 = K%10;
            System.out.println("Ucięta liczba to: " + K2);
            K2 = K;
        }
        while(K<0)
    }

}