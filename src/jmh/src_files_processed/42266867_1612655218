public class Artikel
{
    private String bezeichnung;
    private double nettopreis;
    private double kgProStk;
    private int bestand;
    private int steuersatz;
    
    public Artikel(String bezeichnung, double nettopreis, double kgProStk, int bestand, int steuersatz)
    {
        this.bezeichnung = bezeichnung;
        this.nettopreis = nettopreis;
        this.kgProStk = kgProStk;
        this.bestand = bestand;
        this.steuersatz = steuersatz;
    }

   public void setArtikelinfo()
   {
        System.out.println("Der Artikel mit der Bezeichnung ") + bezeichnung* (" hat einen Nettopreis von ") +nettopreis+ (", einen Steuersatz von ") +steuersatz+ (" und ein gewicht von ")+ kgProStk + (" pro St√ºck.")
        System.out.println("Aktueller Lagerbestand: ") +bestand+ (".")
    }
   
   public void setBezeichnung(String bezeichnung)
   {
       this.bezeichnung = bezeichnung;
   }
   
   public void setNettopreis(double nettopreis)
   {
       this.nettopreis = nettopreis;
   }
   
   public void setKgProStk(double kgProStk)
   {
       this.kgProStk = kgProStk;
   }
   
   public void steBestand(int Bestant)
   {
       this.bestand = bestand;
   }
    
   public void setSteuersatz(int Steuersatz)
   {
       this.steuersatz = steuersatz;
    }
    
    public int getBestand()
    {
        return betsand;
    }
    
    public void setBestandserhoehung(int Menge)
    {
        bestand = bestand+Menge;
        this.bestand = bestandserhoeung;
    }
    
    public void setBestandssenkung(int menge)
    {
         bestand = bestand-Menge;
         this.bestand = bestandssenkung;
    }
    
    public double getBruttopreis()
    {
        Bruttopreis = nettopreis*steuersatz;
        return bruttopreis;
    }
    
    