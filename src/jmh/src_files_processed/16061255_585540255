import java.util.*;
public class PRGString {  
    
  
  
  
  
  
  public static boolean esSubcadena(String a, String b)
  {
       if (a.length() > b.length()) {return false;}
       else if (a == "") {return true;}
       else if (b == "" & a != "") {return false;}
       else if ((a.length() == 1) & a.charAt(0)==b.charAt(0)){return true;}
       else if (a.charAt(0)==b.charAt(0)){return esPrefijo(a.substring(1,a.length()), b.substring(1, b.length()));}
       else /**(a.charAt(1)!=b.charAt(0))*/{return esPrefijo(a, b.substring(1, b.length()));}
      
    }
  public static boolean esPrefijo(String a, String b)
  {
      
      if (a.length() > b.length()) {return false;}
      else if (a == "") {return true;}
      else if (b == "" & a != "") {return false;}
      else if ((a.length() == 1) & a.charAt(0)==b.charAt(0)){return true;}
      else if (a.charAt(0)==b.charAt(0)){return esPrefijo(a.substring(1,a.length()), b.substring(1, b.length()));}
      else {return false;}
  }

public void Palindromo(String a) { 
    pal=a.toUpperCase();  
} 

public boolean esPalindromo() {   
    if(pal.length() <= 1) {  
        return true; 
    }
    char primero = pal.charAt(0);
    char ultimo = pal.charAt(pal.length()-1);
    if(Character.isLetter(primero) && Character.isLetter(ultima)) {
         if(primero!=ultima) {  
             return false; 
             else {
                 Palindromo sub= new Palindromo( pal.substring(1,pal.length()-1));  
                 return sub.esPalindromo(); 
                }  
            }
            else if (!Character.isLetter(primero)) {   Palindromo sub= new Palindromo(pal.substring(1));  
                return sub.esPalindromo(); 
            }
            else {   
                Palindromo sub= new Palindromo( pal.substring(0,pal.length()-1));  
                return sub.esPalindromo(); 
            }
        }
  } 
}


