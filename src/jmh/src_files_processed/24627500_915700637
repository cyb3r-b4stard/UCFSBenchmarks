public abstract class Worker
{
    String name;
    int wage, hours;
    boolean employment;
    
    public void Worker()
    {
    }
    
    public void Info(String name, int wage)
    {
        this.name = name;
    }
    
    private void Wage(int wage)
    {
        this.wage = wage;
    }
    
    protected void Wage(int wage, int change)
    {
        Wage(wage);
        wage += change;
    }
    
    abstract String Display();
    
}

abstract class Doctor extends Worker
{
    int patients;
    String specialty;
    
    public Doctor()
    {
        super();
        patients = 0;
        specialty = "";
    }
    
    public void Specialty(int doctorWage, int doctorBonus, String specialty)
    {
        if (specialty == "Cardiologist")
            super.Wage(doctorWage, doctorBonus);
    }
    
    public void Affiliation()
    {
        
    }
    
    public String Display()
    {
        return Display() + " " + specialty + " " + patients;
    }
}

class Pilot extends Worker
{
    int flyingHours;
    
    public void Pilot()
    {
        super();
        flyingHours = 0;
    }
    
    public void Display()
    {
        return Display() + " " + flyingHours;
    }
    
    public void Hours(int flyingHours)
    {
        this.flyingHours = flyingHours;
    }
}


class WorkerManager
{
    
    
    
    public static void main (String[] args)
    {
        Doctor a = new Doctor();
        
    }
    
    
}