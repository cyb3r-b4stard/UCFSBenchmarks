import java.util.Scanner;
public class tester
{
    public static void main (String[] args)
    {
        System.out.println("Please enter the dealer cost");
        Scanner kb = new Scanner(System.in);
        double deCost = kb.nextDouble();
        
        System.out.println("Please enter the dealer markup");
        
        double deMark = kb.nextDouble();
        
        System.out.println("Please enter the tax rate as a 0.xx decimal");
        
        double tax = kb.nextDouble();
        
        Vehicle price = new Vehicle(tax, deCost,deMark);
        
        System.out.println("Your total purchase price is " + price.purchasePrices());
        
        System.out.println("Would you like to change your markup price? Enter Y or N only");
        String response = kb.next();
        if(response.equals("Y") || response.equals("y"))
        {
            System.out.println("Enter your new markup price."
            double changeM1 = kb.nextDouble();
            price.changeMarkup(changeM1);
            System.out.println("Your markup price has been changed to " + changeM1);
            System.out.println("Your new total purchase price is " + price.purchasePrices());
        }
        
    }
    
}