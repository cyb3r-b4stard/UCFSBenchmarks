import java.util.Calendar;
import java.lang.*;

public abstract  class ComPista extends Atividade
{
    private double distancia;
   
    
    public double distancia(){
    return this.distancia;}
    
     public double getDistancia() {
    return this.distancia; 
    }
    
      public void setDistancia(double distancia) {
    this.distancia = distancia;
    }
    
    
    
       public ComPista (){
        super();
        this.distancia =0.0;
   }
    
    public  ComPista(Calendar dia, Calendar diaHora, double duracao, double BatimentoCardiaco, double distancia) {
       super(dia, diaHora, BatimentoCardiaco, duracao);
       this.distancia  =distancia;
   }
    
    public  ComPista ( ComPista a){
        super(a);
        this.distancia       = a.getDistancia();

   }
  
  
    public double velocidadeFator( ComPista a) {
    double fator ;
    double velocidade= a.getDistancia()/a.getDuracao();
    switch (velocidade) {
        case (<=8):
        fator=0.7;
        break;  
        case (<9.6):
        fator=0.9;
        case (<11.1):
        fator=1;
        case (<13.1):
        fator=1.2;
        case (<16.1):
        fator=1.45;
        case (velocidade>16.1):
        fator=1.6;
    }
    return fator;
  }
 
}
    
    
