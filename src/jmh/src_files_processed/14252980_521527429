import java.util.ArrayList;

public class Library1 implements Rules 
{
    private String LibraryName;
    int numberOfComputers;
    private ArrayList<String> books;
    private ArrayList<String> author;
    private ArrayList<String> BookIsbn;
    

    /**
     * ArrayList constructor
     */
    
    public Library1()
    {
        
        books  = new ArrayList<String>();
        author = new ArrayList<String>();
        BookIsbn = new ArrayList<String>();
    }
    
    /**
     *this mothed use for set the library name  
     */
    public void setLibraryName(String LibraryName)
    {
        this.LibraryName = LibraryName;
    }
    
    public void addBook(String book, String Author, String Bkisbn)
    {
        books.add(book);
        author.add(Author);
        BookIsbn.add(Bkisbn);
        
    }

    public String getBook(int bookNumber)
    {
        return books.get(bookNumber);
    }
    
    public int getNumberOfBooks()
    {
        return books.size();
    }
    
    public void listBooks()
    {
        int j=1;
        for(int i=0; i<books.size(); i++)
        {
            System.out.println(" "(+ j"-") + "Book Name - "+book.get(i) + "\nAuthor Name :" +author.get(i)+"\nBook ISBN :"BookIsbn.get(i)  );
            j++;
            
            
        for(String a : author)
        {
            System.out.println(" " +a);     
         
        }   
            
        }   
    }
    
    public void setNumberOfComputers(int numberOfComputers)
    {
        this.numberOfComputers = numberOfComputers;
    }
    
    public void useComputer(int computerNumber)
    {
        if(computerNumber>0&&computerNumber<=numberOfComputers)
        {
            System.out.println("You are using Computer number: "+computerNumber);
        }
        else
        {
            System.out.println("Computer number out of limit.");
        }
    }
}