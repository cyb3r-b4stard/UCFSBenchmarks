      System.out.println("Please enter the players's number of three point shots attempted.");
      threepointsattempted=Keyboard.nextLine();
      totalpoints=(foulshots+twopointshots*2+threepointshotsmade*3);
      freethrowaverage=(foulshotsattempted/foulshotsmade+twopointshotsattempted/twopointshotsmade+threepointshotsattempted/threepointshotsmade);
      threepointaverage=(threepointshotsattempted/threepointshotsmade);
