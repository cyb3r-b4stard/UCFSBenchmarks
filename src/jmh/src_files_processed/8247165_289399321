import java.util.ArrayList;

public class BOBCampagne
{
    private String campagneNaam;
    private ArrayList<AlcoholTest> testen;

    public BOBCampagne (String naam)

    {
        campagneNaam = naam;
        testen = new ArrayList<AlcoholTest>();
    }

    public int geefAantalTesten()
    {
        return testen.size();
    }

    public void addTest (AlcoholTest test)
    {
        testen.add(test);
    }

    public void toonOverzicht()
    {
        for(AlcoholTest alcoholtest : testen)
        {
            System.out.println(alcoholtest.toString());
        }
    }

    public void kenBoetesToe()
    {
        for(AlcoholTest alcoholtest : testen)
        {
            if(alcoholtest.getPromille() > 5)
            {
                System.out.println(alcoholtest.getBoete());

            }
        }
    }

    public int gemiddeldeVanEenLocatie (String locatie)
    {
        int totaal = 0;
        for(int i = 0; i < testen.size(); i++)
        {
            if(testen.get(i).getLocatie().equals( locatie))
            {
                totaal = totaal + testen.get(i).getPromille();
                System.out.println("test: " testen.get(i) + "resultaat: " testen.get(i).getPromille();
            }
        }
    }
    /*
     * 
     *

    public AlcoholTest geefZwaarsteOvertreding()
    {}

    public ArrayList<String> geefGevaarlijkstePlekken (int gevaarlijk)
    {}
    public void verwijderAlleTestenVanLocatie (String Locatie)
    {}
    public void verwijderAlleTestenOuderDan  (Calendar moment)
    {}
     */
}