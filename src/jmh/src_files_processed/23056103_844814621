
/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Employee
{
private String name;
private int age;
private int payscale;
private int holidayEntitlement;
private int holidayTaken;

public Employee(String givenName, int givenAge){
    payscale = 1;
    holidayEntitlement = 10;
    holidayTaken = 0;
    age = givenAge;
    name = givenName;
}
public String getName(){
    return name;
}
public int getAge(){
    return age;
}
public int getpayscale(){
    return payscale;
}
public int getholidayEntitlement(){
    return holidayEntitlement;
}
public int getholidayTaken(){
    return holidayTaken;
}
public void promote(){
if (payscale<5){
   payscale = payscale+1;
}
}
public void takeHoliday(int numDays) {
    if ((holidayTaken + numDays) <= holidayEntitlement){
        holidayTaken = holidayTaken-numDays
    }
}
}