public class Pasaje
{
   private String tipoPasaje;
   private int numero;
   private String fechaPasaje;
   private int valorPasaje;
   private boolean coloColino;
   
   public Pasaje()
   {
       tipoPasaje = "Economica";
       numero = 6;
       fechaPasaje = "09/05/2015";
       valorPasaje = 20000;
       coloColino = false;
    }
   public Pasaje (String tipoPasaje, int numero, String fechaPasaje, int valorPasaje, boolean coloColino)
   {
       this.tipoPasaje=tipoPasaje;
       this.numero=numero;
       this.fechaPasaje=fechaPasaje;
       this.valorPasaje=valorPasaje;
       this.coloColino=coloColino;
    }
   public String getTipoPasaje()
   {
       return tipoPasaje;
    }
    public void setTipoPasaje (String tipoPasaje)
    {
        this.tipoPasaje=tipoPasaje;
    }
    public int getNumero()
    {
        return numero;
    }
    public void setNumero(int numero)
    {
        this.numero=numero;
    }
    public String getFechaPasaje()
    {
        return fechaPasaje;
    }
    public void setFechaPasaje(String fechaPasaje)
    {
        this.fechaPasaje=fechaPasaje;
    }
    public int getValorPasaje()
    {
        return valorPasaje;
    }
    public void setValorPasaje(int valorPasaje)
    {
        this.valorPasaje=valorPasaje;
    }
    public boolean getColoColino()
    {
        return coloColino;
    }
    public void setColoColino(boolean coloColino)
    {
        this.coloColino=coloColino;
    }
    public void ImprimirPasaje()
    {
        System.out.println("Tipo de pasaje: "+tipoPasaje);
        System.out.println("Numero: "+numero);
        System.out.println("Fecha de pasaje: "+fechaPasaje);
        System.out.println("Valor de pasaje: "+valorPasaje);
        System.out.println("Es colocolino el pasajero?: "+coloColino);
    }
