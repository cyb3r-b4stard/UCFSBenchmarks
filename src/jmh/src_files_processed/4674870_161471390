import java.util.*;
/**
 * ##### # ########### ## ##### ################# ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Backwardsdrawkcab
{
    Scanner reader = new Scanner (System.in);
    int x;
    String temp;
    boolean palindrome = false;
    public void input()
    {
        System.out.println("How many words will you be entering?");
        x = reader.nextInt();
        String[]first = new String[x];
        char[]word = new char[x];
        System.out.println("Please start entering your words now...");
        for (int y = 0; y < x; y++)
        {
            System.out.println("Word " + y + "?");
            first[y] = reader.nextLine();
            temp = first[y];
            word[y] = temp.toCharArray;
            checkPalindrome();
        }
    }
    public void checkPalindrome(char [] word)
    {
        word[y] = temp.toCharArray;
        System.out.println(word[y])
    }
}
