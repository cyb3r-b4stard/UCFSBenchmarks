package uebungen.klasure;

public class Fussball_WM_Gruppe
{
    final int TEAMS_PRO_GRUPPE=4;
    FussballTeam[] team;

    Fussball_WM_Gruppe(String [] teams)
    {
        this.team=new FussballTeam[TEAMS_PRO_GRUPPE];
        for(int idx=0;idx<TEAMS_PRO_GRUPPE;idx++)
        {
            this.team[idx]= new FussballTeam(teams[idx]);
        }
    }

    FussballTeam gibTeam(String name)
    {
        while(name!=null)
        {
            for(int idx=0;idx<TEAMS_PRO_GRUPPE;idx++)
            {
                if(name.equals(this.team[idx].name))
                {
                    return this.team[idx];
                }
            }
        }
        return null;
    }

    boolean neuesSpiel(String teamA, String teamB, int toreA, int toreB)
    {
        teamA=gibTeam(teamA);
        teamB=gibTeam(teamB);
        if(A==null&&B==null)
        {
            return false;
        }
        if(toreA>toreB)
        {
            A.punbte+=3;
        }
        else if(toreA<toreB)
        {
            B.punkte+=3
        }
        else
        {
            A.punkte++;
            B.punte++
        }
        retzrn true;
    }

    public String toString()
    {

    }
}