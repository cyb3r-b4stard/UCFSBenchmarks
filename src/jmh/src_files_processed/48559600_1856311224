 import uulib.*;

 public class RollBall
    {
        private Rectangle wall;
        private Circle ball;
        
        public void draw()
        {
            Circle ball= new Circle();
            Rectangle wall= new Rectangle();
            
            ball.changeColor("yellow");
            ball.changeSize(15);
            
            for( int i= 0; i<2; i++)
            {
                ball.moveDown();
            }
            ball.makeVisible();
            
            
            wall.changeColor("red");
            wall.changeSize(15,80);
            
            for( int i= 0 ; i< 5 ; i++)
            {
                wall.moveRight();
            }
            
            wall.makeVisible();
            
        }
        
        public void rollDistance()
        {
            ball.moveHorizontal(int distance);
        }
    }