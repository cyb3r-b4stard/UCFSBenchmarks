

public class Car
{
   
    final private String type;
    private Person driver;
    private Person codriver;
    private Location location;
    
    
    
    
    public Car(String type, Location location)

    {
       this.type = type;
       this.location = location;
       
       System.out.println("Ein " + type + " wurde in " + location.getName() + " gebaut.");
       
    }

    public void driveTo(Location location)
    
    {
        System.out.println("Der " + type + " ist nach " + location.getName() + " gefahren.");
    }
    
    
    public void getOnAsDriver(Person person)
    
    {
        System.out.println(driver.getName() " ist in den " + type + "als Fahrer eingestiegen.");
    }
    
    
    public void getOnAsCoDriver(Person person)
    
    {
        System.out.println(codriver.getName() " ist in den " + type + "als Beifahrer eingestiegen.");
    }
    
    public Person getOffDriver()
    
     {
        System.out.println(driver.getName() " ist aus dem " + type + "ausgestiegen.");
    }
    
    public Person getOffCoDriver()
    
    {
        System.out.println(codriver.getName() " ist aus dem " + type + "ausgestiegen.");
    }
}