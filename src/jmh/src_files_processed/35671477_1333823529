import ecs100.*;    
    
public class Mark {
    
    private int total;
    private int score;
    
    public Mark(int total, int score){
        this.total = total;
        this.score = score;
    }        
    
    public int getTotal(){
        return total;
    }
    
    public int getScore(){
        return score;
    }

    public double asPercentage(){
        return "Your grade percentage is " score / total * 100;
    }  
    

    }


}