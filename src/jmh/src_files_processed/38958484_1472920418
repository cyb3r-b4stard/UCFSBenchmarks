class digit
{
    void number (int num)
    {
        if ((num>=0)&&(num<=9))
        {
            System.out.println("the num is 1 digit");
        }
        if((num>9)&&(num<=99))
        {
            System.out.println("the num is 2 digit");
        }
    if ((num>99)&&(num<=999))
    {
        System.out.println("the num is 3 digit")
    }
}
}