import java.awt.*;
import javax.swing.*;
import java.awt.Graphics;

public class Grafikpanel extends JPanel
{

    public static terning1 terning1 = new terning1();        
    public void paintComponent(Graphics g)
    {
        super.paintComponent(g);

        JTextField textFieldNavn = new JTextField();

        g.setColor(Color.GREEN);  
        g.drawRect(0,0,600,350);
        g.fillRect(0,0,600,350);

        terning1.kast();                             
        int xpos1 = terning1.sendxpos();
        int ypos1 = terning1.sendxpos();
        System.out.println(xpos1);
        terning1.tegnTerning(g);
        String tekst1 = terning1.toString();
        int værdi1 = Integer.parseInt(tekst1);      

        terning1.kast();                            
        int xpos2 = terning1.sendxpos();
        int ypos2 = terning1.sendxpos();
        System.out.println(xpos2);

        boolean inde;
        inde = inde = xpos2 - 100 <= xpos1 && xpos1 =< xpos2;

        while (inde = true)
        {
            terning1.kast();
            xpos2 = terning1.sendxpos();
            ypos2 = terning1.sendxpos();

            System.out.println("HOLD NU KÆFT MAND");
        }

        terning1.tegnTerning(g);
        String tekst2 = terning1.toString();
        int værdi2 = Integer.parseInt(tekst1);  

        int sum = værdi1 + værdi2; 
        String sumgra = ""+sum;
        g.drawString("Samlet terningssum: " + sumgra,10,320);
    }
}