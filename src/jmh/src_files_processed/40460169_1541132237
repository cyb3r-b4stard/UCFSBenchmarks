import java.util.ArrayList;
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### ###### ########
 * @####### ##/##/##
 */
public class Packet
{
    /** stores the senders address. */
    private int senderAddress;
    /** stores the receivers address. */
    private int receiverAddress;
    /** Stores a number in a message. */
    private int numberInMessage;
    /** Stores the number of packets for the message. */
    private int numberOfPackets;
    /** Stores the message fragment. */
    private String fragment;
    
    /**
     * Constructor for the Packet class
     * 
     * @param theSenderAddress The sender's address.
     * @param theReceiverAddress The receiver's address.
     * @param theNumberInMessage The number in the message.
     * @param theNumberOfPackets The number of packets.
     * @param theFragment The message fragment.
     */
    public Packet(int theSenderAddress, int theReceiverAddress, int theNumberInMessage, int theNumberOfPackets, String theFragment){
        senderAddress = theSenderAddress;
        receiverAddress = theReceiverAddress;
        numberInMessage = theNumberInMessage;
        numberOfPackets = theNumberOfPackets;
        fragment = theFragment;
    }
    
    /**
     * Accessor for the sender's address.
     * 
     * @return The sender's address.
     */
    public int getSenderAddress(){
        return senderAddress;
    }
    
    /**
     * Accessor for the receiver's address.
     * 
     * @return The receiver's address.
     */
    public int getReceiverAddress(){
        return receiverAddress;
    }
    
    /**
     * Accessor for the number in a message.
     * 
     * @return The the number in a message.
     */
    public int getNumberInMessage(){
        return numberInMessage;
    }
    
    /**
     * Accessor for the number of packets.
     * 
     * @return The number of packets.
     */
    public int getNumberOfPackets(){
        return numberOfPackets;
    }
    
    /**
     * Accessor for the message fragment.
     * 
     * @return The message fragment.
     */
    public String getFragment(){
        return fragment;
    }
    
    /**
     * Method that splits the message fragment
     * 
     * @param theSenderAddress The sender's address.
     * @param theReceiverAddress Thereceiver's address.
     * @param theFragment The message fragment.
     */
    public ArrayList<String> splitMessage(int theSenderAddress, int theReceiverAddress, String theFragment){
