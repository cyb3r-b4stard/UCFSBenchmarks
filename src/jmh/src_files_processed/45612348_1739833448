
public class Sort
{
    private int[] sort;

    public Sort ()
    {
        sort = new int[]{8,1,4,5,2,9,7};
        sortiert = true;
    }
    private boolean sortiert;
    private int merken;
    public String out;
    public int[] sortieren()
    {
        
        do{
            sortiert = false;
            for (int i = 0; i < sort.length - 1; i++){
                if(sort[i] > sort[i+1] ){
                    merken = sort[i];
                    sort[i] = sort[i+1];
                    sort[i+1]= merken;
                    sortiert = true;
                
                }
                
            }
        }while(sortiert == true);
        return sort;
    }
    System.out.println(sort);
}