
public class Triangle2Runner
{
    public Triangle2Runner()
    {
        
    }
    
    public static void main(String[] args)
    {
        Triangle2 isosceles = new Triangle2(3,3,3);
        System.out.printf("Side lengths of %d, %d, and %d, gives perimeter of %d and area of %.3f %n" sideA, sideB, sideC, perimeter, area);
        isosceles.perimeter();
        isosceles.area();
        isosceles.printTriangle2();
        
        Triangle2 right345 = new Triangle2(3,4,5);
        right345.perimeter();
        right345.area();
        right345.printTriangle2();
    }
}