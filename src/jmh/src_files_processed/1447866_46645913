
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Konto
{
    
   private int kontonummer;
   private String inhaber;
   private double kontostand;
   
   
   /*
    * konstruktor mit parameter anlegen
    */
   public Konto (int kontonummer; String inhaber; double kontostand) {
      
    this.kontonummer = kontonummer;
    this.inhaber = inhaber;
    this.kontostand = kontostand;
    }
   
   
   /*
    * Einzahlen eines Betrags
    * 
    * @param betrag einzuzahlender Betrag (betrag > 0 ) 
    */
   public void einzahlen (double betrag){
    kontostand = kontostand + betrag ;
    }
    
    /*
     * Abheben eines betrag 
     * @param bettrag Abzuhebender betrag
     *
     */
    public void abheben (double betrag){
    kontostand = kontostand - betrag;
    }
    
    public double getKontostand (){
    return kontostand;
    }
   
   
   
   
}