 * @####### ##/##
 */

import java.util.Random;
import java.util.Scanner;
public class RockPaperScissors
{
    public static void main (String[] args)
    {
        boolean again = true;         
        int userinput = 0;
        Random generator = new Random();
        System.out.println("Let's play some rock paper scissors!");     

        
        
       while (again == true) {  
                        
           int rando = generator.nextInt(3) + 1; 
           Scanner scan = new Scanner (System.in);
           System.out.println("Rock, paper, or scissors?");
           String guess = scan.next(); 
           
     

            if (guess.equalsIgnoreCase("rock"))
            {
               userinput = 1;
            }
            else if (guess.equalsIgnoreCase("paper")) 
            {

                userinput = 2;
    
            }
            else if (guess.equalsIgnoreCase("scissors"))
            {
               userinput = 3;
            }
            else {
                System.out.println("That's not valid!");
                again = false;
            }
            
            if (rando == 1)
            {
                if (userinput == 1)
                {
                    System.out.println("Both you and the computer picked rock. It's a tie!");
                }
                if (userinput == 2)
                {
                    System.out.println("You picked paper. The computer picked rock. You win!");
                }
                if (userinput == 3)
                {
                    System.out.println("You picked scissors. The computer picked rock. You lose!");
                }
                
            }
             if (rando == 2)
            {
                if (userinput == 1)
                {
                    System.out.println("You picked rock. The computer picked paper. You lose!");
                }
                if (userinput == 2)
                {
                    System.out.println("Both you and the computer picked paper. It's a tie!");
                }
                if (userinput == 3)
                {
                     System.out.println("You picked scissors. The computer picked paper. You win!");
                }
            }
             if (rando == 3)
            {
                if (userinput == 1)
                {
                    System.out.println("You picked rock. The computer picked scissors. You win!");
                }
                if (userinput == 2)
                {
                   System.out.println("You picked paper. The computer picked scissors. You lose!");
                }
                if (userinput == 3)
                {
                    System.out.println("Both you and the computer picked scissors. It's a tie!");
                }
            }
        }
        System.out.println("Would you like to play again?")
       
    }
}