import kareltherobot.*;
public class SmartBot extends Robot
{

    /*
     * Constructor for smarter robot
     */
    public SmartBot(int street, int avenue, Direction facing, int beepers)
    {
        super(street, avenue, facing, beepers);
    }

    /*
     * turns robot to the right
     */
    public void turnRight()
    {  
        turnLeft();
        turnLeft();
        turnLeft();
    }

    /*
     * turns robot to face opposite direction
     */
    public void turnAround()
    {
        turnLeft();
        turnLeft();
    }

    
    
    /*
     * no beepers should be left in the bag
     */
    public boolean emptyBeeperBag()
    {
        while (anyBeepersInBeeperBag())
        {
            putBeeper();
        }
        move();
        return true;
    }

    /*
     * end at 1, 1
     */
    public void goToOrigin()
    {
        
        while (!facingSouth())
        {
            turnLeft();
        }
        while (frontIsClear())
        {
            move();
        }
        
        while(!facingWest())
        {
            turnLeft();
        }
        while (frontIsClear())
        {
            move();
        }
        while (!facingEast())
        {
            turnLeft();
        }
    }

     /*
     * odd vs. even
     */
    public void moveIntoRobotHeaven()
    {
        
        turnRight();
        while (nextToABeeper())
        
        {
            pickBeeper();
            turnAround();
            
            
            
            }
           emptyBeeperBag();
        }
    public void Dodis()
    
    {
    if (frontIsClear())
    {
        move()
    } else
    
        
    
    
     /*
     * follow path
     */
    public void meander()
    {
        
        
    }
}