        Backspace.addActionListener(
        new ActionListener()
        {
            public void actionPerformed(ActionEvent e)
            {
                t1.requestFocusInWindow();
                t1.setText(null);
                try
                {
                    Robot robot = new Robot();
                    robot.keyPress(KeyEvent.VK_BACK_SPACE);
                    robot.keyRelease(KeyEvent.VK_BACK_SPACE);
           
                } 
                catch (AWTException e1)
                {
                    e1.printStackTrace();
                }
        
        
        
        
            }
        }
        );
        File f = new File("projectFile.txt");
        Save.addActionListener(
        new ActinListener()
        {
            public void actionPerformed(ActionEvent e)
            {
                 FileOutputStream fw=new FileOutputStream(f);
                        
                        
                        fw.write(t1.getText().getBytes());
        
        
     
            StringBuffer sb=new StringBuffer("");
            int x=0; 
            try
                 {
                     FileInputStream fr=new FileInputStream(new File("projectFile.txt"));
                    
                    try 
                       {
                           int f1;
                                    while((f1=fr.read()) !=-1)
                                    {
                                        sb.append((char)f1);
                                        x=x+1;
                                    }
                        fr.close();
                    }
                    catch(Exception e){ System.out.println("Please check your File"); }
                }
            
            catch(FileNotFoundException fe) 
                    { System.out.println("Please check your file"); }
                
                }
            }
    
