public class Forest
{
    private String name;
    private String location;
    private double squareMeters;
    private double price;
    private Owner forestOwner;
    private Tree forestTree;

    public Forest()
    {
    }
    
    public Forest(String name, String location, int squareMeters)
    {
        this.name = name;
        this.location = location;
        this.squareMeters = squareMeters;
    }
    
    public void setOwner(Owner forestOwner)
    {
        this.forestOwner = forestOwner;
    }
        
    public void setTree(Tree forestTree)
    {
        this.forestTree = forestTree;
    }
    
    public double calculateRevenue()
    {
        
        return squareMeters * price;
    }
    
    public double calculateCost()
    {
        double cost;
        squareMeters
        return squareMeters * price;
    }

    
    public void printForest()
    { 
        System.out.println("##### FORREST #####");
        System.out.println("Name: " + name);
        System.out.println("Location: " + location);
        System.out.println("M2: " + squareMeters);
        System.out.println();
        
        if(forestOwner != null)
        {
            System.out.println("##### OWNER #####");
            System.out.println("Name: " + forestOwner.getOwnerName());
            System.out.println("Address: " + forestOwner.getAddress());
            System.out.println("Phone: " + forestOwner.getPhoneNumber());
            System.out.println();
        }
        
        if(forestTree != null)
        {
            System.out.println("##### TREE #####");
            System.out.println("sort: " + forestTree.getSort());
            System.out.println("lifespan: " + forestTree.getLifespan());
            System.out.println("costPerSquareKilometer: " + forestTree.getCostPerSquareKilometer());
            System.out.println("revenuePerSquareKilometer: " + forestTree.getRevenuePerSquareKilometer());
            System.out.println();
        }
        
        
    }
}