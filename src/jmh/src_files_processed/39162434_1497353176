import.java.io.*;
import java.util.*;
import java.util.Scanner;


    public class pirateTalk
    {
        public static void main (String[] args) throws IOException{
            File dictionary = new File ("dict.txt");
            Scanner fileName = new Scanner(System.in), dictScan = new Scanner(dictionary);
            String file, EngPhrase = "", eng = "", prt = "";


            
            System.out.println("What is the name of your file?");
            file = fileName.next();
            File SourceFile = new File(file);
            
            if(!SourceFile.exists())
            {
                System.out.println("Source file does not exist");
                System.exit(0);
            }
            
            Scanner fileScan = new Scanner(SourceFile);
            while(fileScan.hasNextLine())
            {
                EngPhrase = EngPhrase + fileScan.nextLine().toLowerCase() + "/n";
            }
            String PrtPhrase = EngPhrase;
            dictScan.useDelimiter(",");

        }
	}
