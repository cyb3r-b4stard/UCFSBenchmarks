public class GRAPH
{
    private KNOTEN[] knotenfeld;
    private int[][] matrix;
    private int anzahlKnoten = 0;
    public GRAPH(int maxAnzahlKnoten)
    {
        knotenfeld = new KNOTEN [maxAnzahlKnoten];
        matrix = new int[maxAnzahlKnoten][maxAnzahlKnoten];
        for(int i=0; i < maxAnzahlKnoten; i++)
        {
            for(int j=0; j < maxAnzahlKnoten; j++)
            {
                if(i == j)
                {
                    matrix[i][j] = 0;
                }
                else
                {
                    matrix[i][j] = -1;
                }
            }
        }
    }   
    
    void knotenAusgeben()
    {
        for (int i=1; i < anzahlKnoten; i++)
        {
            knotenefeld[i].datenmitDHLliefern.ausgeben;
        }
    }
}