package de.uni_bremen.informatik.pi1.mud.contents;

import java.util.ArrayList;

/**
 * ##### ###### ############# ### ################## ### ###### (##########).
 * 
 * @###### (#. ####) 
 * 
 */
public class ClosingDevice {
    /**
     * Legt fest, ob der Schließmechanismus geschlossen oder offen ist.
     */
    private boolean closed;

    /**
     * ArrayList, welche die Gegenstände speichert, in für welche das ClosingDevice-Objekt gilt.
     */
    private ArrayList<Closeable> closeables;

    public void ClosingDevice() {
        closed = true;
        closeables = new ArrayList<Closeable>();

    }

    public boolean isClosed(){
        return closed;
    }

    public void close(){
        closed = true;
    }

    public void open(){
        closed = false;
    }

    public void addCloseable(Closeable pCloseable){
        closeables.add(pCloseable);
    }

    public Room[] getAffectedRooms(){

        for (i=0, i<(closeables.length), i++){
            Room[](closeables.size) affectedRooms;
            affectedRooms.add(closeables.get(i).getRoom());
        }
        return affectedRooms;
    }

}