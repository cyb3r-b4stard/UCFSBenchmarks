import java.util.*;
import javax.swing.*;
import java.awt.event.*;
import java.awt.*;

public class FormExample extends Frame implements ActionListener 
{
   private JButton button1;
   private JButton button2;
   private JButton button3;
   private JLabel label2;
   private TextField txt1;
   private JLabel label1;
   private int count = 0;
    public FormExample(){
     JFrame frame = new JFrame ("FlowLayout");
    frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    
    JPanel panel = new JPanel(new FlowLayout(FlowLayout.LEFT));
    label1 = new JLabel("Click on the button");
    label1.setPreferredSize(new Dimension (800,100));
    panel.add(label1);
    
    
    choice1 = new JRad
    
    button1 = new JButton("Click on the button");
    button1.setPreferredSize(new Dimension (800,100));
    panel.add(button1);
    button1.addActionListener(this);
    
    txt1 = new TextField("What is 1 + 1");
    panel.add(txt1);
    
      label2 = new JLabel("");
    label2.setPreferredSize(new Dimension (800,100));
    panel.add(label2); 
    
    button3 = new JButton("Are you Right?");
    button3.setPreferredSize(new Dimension (800,100));
    panel.add(button3);
    button3.addActionListener(this);
   
      button2 = new JButton("Exit");
    button1.setPreferredSize(new Dimension (800,100));
    panel.add(button2);
    button2.addActionListener(this);
   
    panel.setPreferredSize(new Dimension(800,600));
    Container cp = frame.getContentPane();
    cp.add(panel, BorderLayout.LINE_START);
    frame.pack();
    frame.setVisible(true);
   }
    public void actionPerformed(ActionEvent e){
       if (e.getSource() == button1){
           count ++;
           label1.setText("Count..." + count);
       }
        if(e.getSource() == button2){
          System.exit(0);
       }
       if(e.getSource() == button3){
          int a = Integer.parseInt(txt1.getText());
          if(a == 4)
              label2.setText("Correct!");
              else
              label2.setText("Your Stupid");
            
       }
   } 
   public static void main (String [] args){
       FormExample f = new FormExample();
   }
}