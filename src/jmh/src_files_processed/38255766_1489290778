public class KASTEN
{
    private int links;
    private int oben;
    private int breite;
    private int hoehe;
    
    public KASTEN()
    {
        links = 50;
        oben = 100;
        breite = 200;
        hoehe = 40;
    }

    public void zeichne()
    {
        ZEICHENFENSTER.gibFenster().zeichneRechteck(links,oben,breite,hoehe);
    }
    
    public void setzeLinks(int linksNeu)
    {
        links = linksNeu;
    }
    
    public void setzeHoehe(int hoeheNeu)
    {
        hoehe = hoeheNeu;
        
       }
       
    public void setzeBreite(int breiteNeu)
    {
        breite = breiteNeu;
        
       }
       
    public void setzteRechts(int rechtsNeu)
    {
        breite = rechtsNeu+links
    }