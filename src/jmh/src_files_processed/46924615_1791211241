public static void printOrders (PurchaseOrder[]  orderArray, boolean usFormat)  {
}    

 
 public static void printOrder (PurchaseOrder order, boolean usFormat)  {
      System.out.printf( "%-10s", order.getOrderDate(usFormat) );
      System.out.printf( "%-9s", order.getRegion() );
      System.out.printf( "%-10s", order.getCustomer() );
      System.out.printf( "%-8s%4d", order.getItem(), order.getUnits() );
      System.out.printf( "%10.2f%10.2f%n", order.getItemCost(), order.getTotalCost() ) ;
  }  

 
  public static void main (String[] args) throws IOException  {
      System.out.println("This program was written by < YOUR NAME >");
