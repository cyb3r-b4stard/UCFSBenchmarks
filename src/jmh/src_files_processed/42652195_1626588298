import java.util.Scanner;
import java.util.Random;
import java.util.*;
/**
 * ######## #### ## ##### ### #### ##### ###### ### ######### ######## ###### #######.
 * 
 * @############
 * @##-##-##
 */


public class guess
{
    public static void main(String[] args) {
    int correct = 0;
    Random rand = new Random();
    int a = rand.nextInt(50) + 1;
    int b = rand.nextInt(50) + 1;
    int c = rand.nextInt(50) + 1;
    int d = rand.nextInt(50) + 1;
    int e = rand.nextInt(50) + 1;
    
    ArrayList<Integer> numbers = new ArrayList<Integer>();
    numbers.add (a);
    numbers.add (b);
    numbers.add (c);
    numbers.add (d);
    numbers.add (e);
    System.out.println(numbers);
    
    Scanner scanner = new Scanner (System.in);
    
    int credit = 30;
    String round = "" ;
    
    int guess1 = 0;
    int guess2 = 0;
    int guess3 = 0;
    int guess4 = 0;
    int guess5 = 0;
    
   System.out.println("Play a round?");
   round = scanner.nextLine();
   while (round.equals("yes"));{
       credit = credit - 5;
        System.out.println(credit);
        System.out.println("Guess 5 numbers betweeen 1-50: ");
        guess1 = scanner.nextInt();
        guess2 = scanner.nextInt();
        guess3 = scanner.nextInt();
        guess4 = scanner.nextInt();
        guess5 = scanner.nextInt();
       ArrayList<Integer> userinput = new ArrayList<Integer>();
       userinput.add (guess1);
       userinput.add (guess2);
       userinput.add (guess3);
       userinput.add (guess4);
       userinput.add (guess5);
       System.out.println(userinput);
       Collection<Integer> similar = new HashSet<Integer>(numbers);
       Collection<Integer> different = new HashSet<Integer>();
       different.addAll(numbers);
       different.addAll(userinput);
       
       similar.retainAll(numbers);
       different.retainAll(userinput);
       different.removeAll(similar);
       correct = (similar.size());
    }
    System.out.println("See ya l8r sk8r");

   if (correct == 0){
      
      System.out.println("None right. Current credits: " + credit);
  
}
 if (correct == 1){
     credit = credit + 10;
     System.out.println("One right. Current credits: " + credit);
  
}
 if (correct == 2){
     credit = credit + 20;
     System.out.println("Two right. Current credits: " + credit);
  
}
 if (correct == 3){
     credit = credit + 40;
      System.out.println("Three right. Current credits: " + credit);
  
}
 if (correct == 4){
     credit = credit + 80;
      System.out.println("Four right. Current credits: " + credit);
  
}
 if (correct == 5){
     credit = credit + 160;
      System.out.println("Five right. Current credits: " + credit);
  
}
}
}
}
