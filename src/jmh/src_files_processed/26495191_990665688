import java.util.Scanner;

public class P12Ex5
{
    public static void main(String[]args)
   {
    Scanner sc = new Scanner(System.in);
        
    int option;
    
    
    String [] sequenceArray;
    double [] sequenceLength;
    
    System.out.print("How many sequences are in the film?: ");
    int size = sc.nextInt();

    
    sequenceArray = new String [size];
    
    sequenceLength = new double [size];
    
    
         
    do
       {
        System.out.println("************* MENU *************");
        System.out.println("1.      Enter Sequence names");
        System.out.println("2.      Enter length of each sequence in the film (in minutes)");
        System.out.println("3.      Display all sequence details (name and length");
        System.out.println("4.      Display the details of longest sequence");
        System.out.println("5.      Display the name of the shortest sequence");
        System.out.println("6.      Calculate and display the average sequence length");
        System.out.println("7.      Exit System");
            
        System.out.println("Please enter an option: ");
        option = sc.nextInt();
            
        switch(option)
        {
                case 1:
            sequenceNames(sequenceArray);
                break;
              
                case 2:
            sequenceLength(sequenceLength);
                break;
                
                case 3:  
            sequenceDisplay(sequenceArray, sequenceLength)
                break;
        }
        }while(option == 1 || option == 2 || option == 3 || option == 4 || option == 5 || option == 6 || option == 7);
   }
   
   private static void sequenceNames(String sequenceArrayIn[])
   {
       Scanner sc = new Scanner(System.in);
       for(int i = 1; i < sequenceArrayIn.length; i++)
       {
          System.out.println("Enter name of sequence " +i);
          sequenceArrayIn[i] = sc.next();
       }
   }
   
   private static void sequenceLength(double sequenceLengthIn[])
   {
       Scanner sc = new Scanner(System.in);
       for(int i = 1; i < sequenceLengthIn.length; i++)
       {
           System.out.print("Enter length of sequence: " +i);
           sequenceLengthIn[i] = sc.nextDouble();
       }
   }
}
