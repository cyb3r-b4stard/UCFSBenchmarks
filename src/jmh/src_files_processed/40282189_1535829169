public class Books
{ private String name;
  private int books;
  
  public Books(String nm, int b) {
      name=nm;
      books=b;
    }
    public int points(){
        int a;
        int b;
        int c;
        a=0;
        b=0;
        c=0;
       
        a = books*10;
       
        b = (books-3)*5;
        b=Math.max(0,b);

        c = (books-6)*20;
        c=Math.max(0,c);
        return a+b+c;
        }
    }
    public String getname(){
        return name;
    }
    public int readbooks(){
        return books;
    }
}
   