package OOP;

public class UsoPortafoglio
{
    public static void main(String[] args)
    {
        Portafoglio x = new Portafoglio(); 
        for(int i=0; i < 4; i++)
        {
            System.out.println("Inserire il valore in euro da aggiungere: "); 
            x.aggiungiEuro(Leggi.unInt()); 
        }
        System.out.println("Inserire il valore in lire da aggiungere: "); 
        x.aggiungiLire(Leggi.unInt()); 
        for(int i=0; i < 4; i++)
        {
            System.out.println("Inserire il valore in lire da togliere: "); 
            x.togliLire(Leggi.unInt()); 
        }
        System.out.println("Inserire il valore in euro da togliere: "); 
        x.togliEuro(Leggi.unInt()); 
        if(x.alVerde())
        {
            System.out.println("Meno male!"); 
        }
        else 
        System.out.println("PiÃ¹ male"); 
        System.out.println(x.quantiSoldi()); 
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        Portafoglio[] x = new Portafoglio()[]; 
    }
    
}