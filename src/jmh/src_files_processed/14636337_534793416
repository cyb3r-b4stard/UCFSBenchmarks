
public class Zapas {
    private String aNazovSutaze;
    private int aPocetTeamov;
    private Klub[] aTeamy;

    /**
     * KonÅ¡truktor na vytvorenie sutaze s dvoma teammi 
     * @param nazovSutaze nazov zapasu
     */
    public Zapas(String paNazovSutaze) {
        this.aNazovSutaze = paNazovSutaze;
        aTeamy = new Klub[2]; 
        aPocetTeamov = 0;
    }

    /**
     * Nastavi alebo prepise nazov sutaze 
     * @param nazovSutaze nazov zapasu
     */
    public void setNazov(String paNazovSutaze) {
        this.aNazovSutaze = paNazovSutaze;
    }

    /**
     * Vrati nazov sutaze
     * 
     * @return nazovSutaze nazov sutaze
     */
    public String getNazovSutaze() {
        return aNazovSutaze;
    }

    /**
     * Metoda prida team do sutaze podla indexu
     * @param index
     * @param aTeam
     */
    public void add(int paIndex, Klub paTeam) {
        if (paIndex >= 0 || paIndex < aPocetTeamov) {
            aTeamy[ paIndex ] = paTeam;
            aPocetTeamov++ ; 
        }
    }

    /**
     * metoda prida team do sutaze na prve volne pole
     * @param aTeam
     */
    public void add(Klub paTeam) {
        aTeamy[ aPocetTeamov++ ] = paTeam; 
    }

    /**
     * Metoda na vratenie pola teamov
     * 
     */
    public String toString() {
        if (aPocetTeamov == 0) return{"Zapas " + aNazovSutaze + " nema zatial vlozene ziadne teamy !!!"; 
        String r = "\n";

        for (int i = 0; i < aPocetTeamov;i++) {
            r += aTeamy[i] + "\n"; 
        }
        return "Nazov zapasu : " + aNazovSutaze + r ; 

    }
}