import java.util.*;

public class Test
{
    private ArrayList<String> opslag;
    public Test()
    {
        opslag = new ArrayList<String>();
    }

    public void addString(String tekst)
    {
        opslag.add(tekst);
    }

    public int getSize()
    {
        return opslag.size();
    }

    public void getObject(int index)
    {
        String naam = opslag.get(index);
        System.out.println(naam);
    }

    public boolean doesNameExist(String naam)
    {
        if (opslag.contains(naam)){
            return true;
        } 
        else 
            return false;
    }

    public boolean isEmpty()
    {
        if (opslag.isEmpty()){
            return true;
        }
        else
            return false;
    }

    public void kopieMaken()
    {
        ArrayList<String> nieuweopslag = new ArrayList<String>(opslag);
    }

    public void replace(int index, String element)
    {
        opslag.set(int index, element)
    }
}

