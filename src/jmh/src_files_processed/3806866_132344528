public class Weihnachtsbaum
{
    public static char[][] erstelleTannenbaum(int h)
    {
        char[][] baum = new char[h][];
        for(int i = 0; i < h; i+2)
            baum[i] = new char[i+1];
            
        baum[0][0] = 'T';
        for(int i = 1; i < baum.length; i++)
        {
            baum[i][0] = 'o';  
            baum[i][i] = 'o';
        }
        for(int i = 1; i < baum.length; i++) 
        {
            if (i % 2 == 0)
            { 
                for (int j = 2; j < baum[i].length - 1; j++)
                    baum[i][j] = 'W';
            }
        }
        return baum;
    }

    public static void gebeDreieckAus(int[][]dreieck)
    {

        for(int i=0;i<dreieck.length;i++)
        { 
            for(int d=0;d<dreieck.length-i-1;d++)
                System.out.print("   ");

            for(int j=0;j<dreieck[i].length;j++)
            {
                if(dreieck[i][j]<100)
                    System.out.print(" ");
                System.out.print(dreieck[i][j]+"   ");
                if(dreieck[i][j]<10)
                    System.out.print(" ");
            }
            System.out.print("\n");
        }
    }

}