import javax.swing.JOptionPane;

public class ScoreKeeper{
    
    public static void main(String args[ ]){
        ScoreSheet player1 = new ScoreSheet();
        ScoreSheet player2 = new ScoreSheet();

        boolean done = false;
        String[ ] choices = {"add 1 to player 1", 
                             "add 1 to player 2",
                             "print descending",
                             "quit"};
        while (!done) {
            int choice = JOptionPane.showOptionDialog(
                    null, 
                    "Click a choice",
                    "Player Menu",
                    JOptionPane.YES_NO_CANCEL_OPTION,
                    JOptionPane.QUESTION_MESSAGE, 
                    null,
                    choices,
                    choices[0]);
                    
            switch (choice){
                case 0: 
                    player1.add1();
                    break;
                case 1: 
                    player2.add1();
                    break;
                case 2: 

                    break;
                case 3: 
                    done = true;
                    break;
                default: 
            } 
        } 
        if (player2 < player1) {
        JOptionPane.showMessageDialog(null, )
    }
        
        
        
        
        JOptionPane.showMessageDialog(null, "...quitting");
    }       
}