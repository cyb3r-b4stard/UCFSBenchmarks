public class Localidad
{
    private int numeroDeHabiantes;
    private String nombre;

    /**
     * Constructor for objects of class Localidad
     */
    public Localidad(int numeroDeHabitantes,String nombre)
    {
        this.numeroDeHabiantes = numeroDeHabitantes;
        this.nombre = nombre;
    }

    /**
     * An example of a method - replace this comment with your own
     * 
     * @param  y   a sample parameter for a method
     * @return     the sum of x and y 
     */
    public String transformarACadenaDeCaracteres()
    {
        return nombre + ", es una localidad con " + numeroDeHabitantes + " habitantes, ";
    }
    /**
     * 
     */
    public void escribirPorPantalla ()
    {
       System.out.printLn(transformarACadenaCaracteres());
}