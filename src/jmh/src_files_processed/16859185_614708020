
import java.util.*;
/**
 * ####### ########
 * ##### ##, ####
 * #### #
 */
public class Boxing 
{
    public static void main(String[] args)
    {
        Scanner kbString= new Scanner(System.in);
        Scanner keyboard=new Scanner(System.in);
        System.out.println("What is your name?");
        String name=keyboard.nextLine();
        System.out.println("How much do you weigh, +name?");
        double weight=keyboard.nextInt();
        if (weight<=102)
        {
            System.out.println("Light minimum weight"+name "weighs in at"+weight "lbs.");
        }
        else if (weight<=105)
        {
            System.out.println("Minimum weight +name weighs in at +weight lbs.");
        }

        if (weight<=108)
        {
            System.out.println("Light fly weight +name weighs in at +weight lbs.");
        }
        else if (weight<=112)
        {
            System.out.println("Fly weight +name weighs in at +weight lbs.");
        }

        if (weight<=115)
        {
            System.out.println("Super fly weight +name weighs in at +weight lbs.");
        }
        else if (weight<=118)
        {
            System.out.println("Bantam weight +name weighs in at +weight lbs.");
        }

        if (weight<=122)
        {
            System.out.println("Super bantam weight +name weighs in at +weight lbs.");
        }
        else if (weight<=126)
        {
            System.out.println("Feather weight +name weighs in at +weight lbs.");
        }

        if (weight<=130)
        {
            System.out.println("Super feather weight +name weighs in at +weight lbs.");
        }
        else if (weight<=135)
        {
            System.out.println("Light weight +name weighs in at +weight lbs.");
        }

        if (weight<=140)
        {
            System.out.println("Super light weight +name weighs in at +weight lbs.");
        }
        else if (weight<=147)
        {
            System.out.println("Welter weight +name weighs in at +weight lbs.");
        }

        if (weight<=154)
        {
            System.out.println("Super welter weight +name weighs in at +weight lbs.");
        }
        else if (weight<=168)
        {
            System.out.println("Super middle weight +name weighs in at +weight lbs.");
        }

        if (weight<=175)
        {
            System.out.println("Light heavy weight +name weighs in at +weight lbs.");
        }
        else if (weight<=200)
        {
            System.out.println("Cruiser weight +name weighs in at +weight lbs.");
        }

        if (weight<200)
        {
            System.out.println("Heavy weight +name weighs in at +weight lbs.");
        }
    }
}