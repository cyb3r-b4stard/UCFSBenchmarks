
/**
 * ##### # ########### ## ##### ########## ####.
 * 
 * @###### ###### ###### ### ###-####### #####
 * @####### (# ####### ###### ## # ####)
 */
public class ampel
{   
    ampelfarbe Wunschlicht = null;
    
    public ampelfarbe setFarbe(ampelfarbe Wunschlicht) {
        this. Wunschlicht  = Wunschlicht;
        return Wunschlicht;
    }
    
    public ampelfarbe getFarbe() {
        return Wunschlicht;
    }
    
    public void main (ampelfarbe args){
        
        this.ampelfarbe farbe = ampelfarbe.args;
        
        if(farbe == ampelfarbe.rot) {
            System.out.println("Die Ampelfarbe ist rot.");
        }
    
        else if(farbe == ampelfarbe.gelb) {
            System.out.println("Die Ampelfarbe ist gelb.");
        }
    
        else if(farbe == ampelfarbe.gruen) {
            System.out.println("Die Ampelfarbe ist gruen.");
        }
    
        else{
            System.out.println("Diese Ampelfarbe gibt es nicht.");
        }
        

        switch (farbe){
        
        case rot:
            System.out.println("Die Ampelfarbe ist rot.");
            break;
            
        case gelb:
            System.out.println("Die Ampelfarbe ist gelb.");
            break;
            
        case gruen:
            System.out.println("Die Ampelfarbe ist gruen.");
            break;
            
        default:
            System.out.println("Diese Ampelfarbe gibt es nicht.");
            break;
        }
    }
    

}
