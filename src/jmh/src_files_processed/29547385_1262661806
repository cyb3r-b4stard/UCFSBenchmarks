import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.awt.Color;
import java.awt.Container;
import java.lang.String;

public class GUI extends JKnob
implements MouseListener, MouseMotionListener
{
    public JPanel createContentPane()
    {
    JPanel totalGUI = new JPanel();
    totalGUI.setLayout(null);
    
    JPanel titlePanel = new JPanel(); 
    titlePanel.setLayout(null);
    titlePanel.setLocation(10,0);
    titlePanel.setSize(1000,30);
    totalGUI.add(titlePanel); 
    
    JLabel blueLabel = new JLabel("Low Temperature"); 
    blueLabel.setLocation(0,0);
    blueLabel.setSize(300,30);
    blueLabel.setHorizontalAlignment(0);
    blueLabel.setForeground(Color.blue);
    titlePanel.add(blueLabel); 
    
    JLabel redLabel = new JLabel("High Temperature"); 
    redLabel.setLocation(420,0);
    redLabel.setSize(300,30);
    redLabel.setHorizontalAlignment(0);
    redLabel.setForeground(Color.red);
    titlePanel.add(redLabel); 

    JPanel buttonPanel = new JPanel(); 
    buttonPanel.setLayout(null);
    buttonPanel.setLocation(10,40);
    buttonPanel.setSize(1000,70);
    totalGUI.add(buttonPanel); 
    
    JButton blueButton = new JButton("Low ON"); 
    blueButton.setLocation(0,0);
    blueButton.setSize(300,30);
    blueButton.setForeground(Color.blue);
    buttonPanel.add(blueButton); 
    
    JButton redButton = new JButton("High ON"); 
    redButton.setLocation(420,0);
    redButton.setSize(300,30);
    redButton.setForeground(Color.red);
    buttonPanel.add(redButton); 
    
    JPanel knobPanel = new JPanel(); 
    knobPanel.setLayout(null);
    knobPanel.setLocation(10,80);
    knobPanel.setSize(1000,700);
    totalGUI.add(knobPanel); 
    
    JKnob knob = new JKnob(); 
    knob.setLocation(300,40);
    knob.setSize(300,300);
    knobPanel.add(knob);
    
    JTextField J = new JTextField();
    J.setLocation(320,160);
    J.setSize(60,40);
    knobPanel.add(J);
    
    totalGUI.setOpaque(true);
    return totalGUI;
}