
import java.util.Scanner;

class Checking
{
        public static void main (String[] args)
        {
            Scanner scan = new Scanner(System.in);
            
            System.out.print ("Beginning Balance in cents: ");
            int balance = scan.nextInt();
            
           
            System.out.print ("Transaction in cents(- for withdrawl + for deposit): ");
            int tran = scan.nextInt();
            
          
            do{
               
                    balance = balance + tran;
                    System.out.println("Transaction: " + tran);
    
                    System.out.println("Balance :" + (balance+ tran));
                    
                    System.out.print ("Transaction in cents(- for withdrawl + for deposit): ");
            int tran1 = scan.nextInt();
                    if (tran1 > 0 && tran1 < 0){
                    System.out.println("Transaction: " + tran);
    
                    System.out.println("Balance :" + (balance + tran));
                }
                    else{ tran = tran1}
                        
                    
                    
                  
                    }
            while( tran<0 && tran>0);}
           
          
        
           
            
            
                }
            
            
            
        
            