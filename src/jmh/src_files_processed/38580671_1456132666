public class BookOrder
{
    final double TAXRATE = 0.075; 
    final double SHIPRATE = 2.00; 

    private String bookName;
    private int numBooks;
    private double bookPrice;
    private double totalBill;

    public BookOrder(String name, int number, double price)
    {
        bookName = name;
        numBooks = number;
        bookPrice = price;
        totalBill = 0;
    }
    public double salesTax()
    {
        Double salesTax = (numBooks * bookPrice) * TAXRATE;
        return salesTax;
    }

    public double shipCost()
    {
        double shipCost = numBooks * SHIPRATE;
        return shipCost;
    } 

    public double totalCost()
    {
        totalBill = (numBooks * bookPrice) + ((numBooks * bookPrice) * TAXRATE) + (numBooks * SHIPRATE);
        return totalBill;
    }
    public String toString()
    {
        return("Book Name" + bookName "\nPrice:  " + bookPrice + "\nNumber Ordered:  " + "\nTotal Price:  " + totBill);
    }
    public String getName()
    {
        return bookName;
    }

    public double getPrice()
    {
        return bookPrice;
    }

    public int getNumberOrdered()
    {
        return numBooks;
    }
}