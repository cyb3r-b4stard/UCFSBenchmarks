import java.util.Scanner;
public class ExamPrep
{
    int option;
    public static void main(String [] args)

    {
        double cdlenght,shortestSong,average;
        int size,option;
        double[]songs;
        Scanner input= new Scanner(System .in);
        System.out.println("How many songs are on your cd ");
        size=input.nextInt();
        songs=new double[size];
        do
        {

            System.out.println("1 Enter lenght of each song: ");
            System.out.println("2 Display all song Lenghts: ");
            System.out.println("3 Display the lenght of the longest song: ");
            System.out.println("4 Display the lenght of the shortest song");
            System.out.println("5 Calculate and display the average song lenght");
            System.out.println("6 Exit System ");
            option=input.nextInt();
            
                if (option < 1||option>6)
                {
                    System.out.println("Please select an option from 1-6");
                
                }
            
                switch (option)
                {
                case 1:
                lenght(songs);
                break;

                case 2:
                display(songs);
                break;
                
                case 3:
                longest(songs);
                break;
                
                case 4:
                shortestSong=shortest(songs);
                System.out.println("Your shortest song in minutes is "+shortestSong);
                break;
                
                case 5:
                average=avg(songs);
                System.out.println("The average song length is "+ average);
    }
              }
              
        }while(option!=6);
    }

    public static void lenght(double[]songlength)
    {
        Scanner input= new Scanner(System .in);
        int i;
        for(i=0;i<songlength.length;i++)
        {
            System.out.println("Please Enter lenght of each song: ");
            songlength[i]=input.nextDouble();
        }
    }

    public static void display(double[]displaysongs)
    {
        int i=0;
        System.out.println(" your song lengths are ");
        for(i=0;i<displaysongs.length;i++)
        {
            
            System.out.println(displaysongs[i]);
        }
    }
    
    public static void longest(double[]longestsong)
    {
        double longest=longestsong[0];
        int i;
        for(i=0;i<longestsong.length; i++)
        {
            if(longestsong[i]>longest)
            {
                longest=longestsong[i];
                
            }
            
        }
        System.out.println("Your longest song is "+longest);
    }
    
    public static double shortest(double[]shortestsong)
    {
        double shortest=shortestsong[0];
        int i;
        for(i=0;i<shortestsong.length; i++)
        {
            if(shortestsong[i]<shortest)
            {
                shortest=shortestsong[i];
                
            }
           
        }
         return shortest;
        
    }
    
    public static double avg(double[]avg)
    {
        
        int i;
        double total, average;
        total=0;
        average=0;
        for(i=0;i<avg.length; i++)
        
        {
           total=total+avg[i];
           average=total/avg.length;
        }
        return average;
}
