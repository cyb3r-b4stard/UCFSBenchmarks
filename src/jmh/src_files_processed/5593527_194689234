import javax.swing.JOptionPane;
public class x
{
    public static void main (String [] args)
    {
        String pass="";
        int count=0;
        String[] harveypogi = {"Inquire","Exit"};
        int harveypogi1;
        String name;
        int job;
        String salary;
        int s;
        String[] term = {"6 months","12 months","18 months","cancel"};
        int terms;
        do{
            pass=JOptionPane.showInputDialog(null,"Enter Employee number:","PIN",
            JOptionPane.QUESTION_MESSAGE);
            count ++;
        if(pass == null && count != 3)
            System.exit (0);
        }
        while(!(pass ==1234 &&count!=3)};  
        if(count==3&&(!(pass.equalsIgnoreCase("1234"))))
            JOptionPane.showMessageDialog(null,"Sorry, You exceed number of tries...\nProgram Terminated...",
            "Wrong password",JOptionPane.INFORMATION_MESSAGE);
        else
        {
            harveypogi1=JOptionPane.showOptionDialog(null,"CAYSASAY FINANCING AND LENDING CORPORATION\n(BSP Certified and Accredited)\nTaal,Batangas","Loan",0,JOptionPane.PLAIN_MESSAGE,null,harveypogi,harveypogi[0]);
            if (harveypogi1 == 0)
            {
                name = JOptionPane.showInputDialog(null,"Enter name","Name",JOptionPane.QUESTION_MESSAGE);
                if (name == null)
                System.exit(0);
                else
                {
                    job = JOptionPane.showConfirmDialog(null,"Good Day "+name+"\nDO you have a JOB?","Verify",JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE);
                    if (job == JOptionPane.NO_OPTION)
                    {
                        JOptionPane.showMessageDialog(null,"Sorry "+name+"\nWe cannot grant you a Loan.","Sorry",JOptionPane.QUESTION_MESSAGE);
                        System.exit(0);
                    }
                    else
                    {
                        salary = JOptionPane.showInputDialog(null,"Enter monthly Salary","Salary",JOptionPane.QUESTION_MESSAGE);
                        s = Integer.parseInt(salary);
                        terms =JOptionPane.showOptionDialog(null,"Choose terms of Payment","Terms",0,JOptionPane.PLAIN_MESSAGE,null,term,term[0]);
                    }
                }
            }
            else
            System.exit(0);
        }
    }
}
