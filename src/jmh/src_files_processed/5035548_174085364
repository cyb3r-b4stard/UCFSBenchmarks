public class Message
{
    private String[] mainMenu;

    public Message () 
    {
        mainMenu = new String[3];
        mainMenu[1] = "Check your balance";
        mainMenu[2] = "Make a payment";
        mainMenu[3] = "Other...";

        mainMenu = new String[] {
            "Check your balance",
            "Make a payment",
            "Other...",
        };

        printMenu(mainMenu);
    }

    public String getMainMenuItem(int number) 
    {
        return mainMenu[number];
    }

    public int getMainMenuNumber(String word) 
    {
        ind index = 0;

        for(String blah : mainMenu) {
            if(blah.contains(word){
                return index;
            }
        }
    }

    public void support()
    {
        String[] subMenu = {
                "Change your account information",
                "Open an new account",
                "Wait hours for to speak to our help desk...",
            };

        printMenu(subMenu);
    }

    public void printMenu(String[] items)
    {
        int counter = 1;
        System.out.println("Your choices are:");
        for(String it : items) {
            System.out.println(
                "  " + counter + ": "+ it
            );
        }
    }
}