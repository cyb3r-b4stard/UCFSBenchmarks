public class Person
{
    private String fName;
    private String lName;
    private int age;
    private String gender;
    private String maritalStatus;
    private boolean petOwner;
    private String title;
    public static final int UPPER_AGE = 87;
    public static final int MARRIED = 1;
    public static final int DIVORCED = 2;
    public static final int SINGLE = 3;
    public static final int WIDOWED = 4;

    public Person(String fName, String lName, int age, String gender, String maritalStatus, boolean petOwner)
    {
       if(fName.length > 1)
       {
           firstName = fname;
        }
        else{
            System.out.println("Error");
    }
       if(lName.length > 1)
       {
           lastName = lname;
        }
        else{
            System.out.println("Error");
    }
       if(gender.length > 1)
       {
           yourGender = gender;
        }
        else{
            System.out.println("Error");
    }
        if(maritalStatus.length > 1)
       {
          yourMaritalStatus = maritalStatus;
        }
        else{
            System.out.println("Error");
    }
    if(age > 87)
    {
        System.out.println("You are in the afterlife.");
}
}

    public int getUPPER_AGE()
    {
        return UPPER_AGE;
    }

    public String getFirstName()
    {
       return firstName;
    }
    
    public String getLastName()
    {
        return lastName;
    }
    
    public int getAge()
    {
        return age;
    }
    
    public String getGender()
    {
        return yourGender;
    }
    
    public String getMaritalStatus()
    {
        return yourMaritalStatus;
    }
    
    public boolean getPetOwner()
    {
        return petOwner;
    }
    
    public void setFirstName(String fn)
    {
        name = fn;
    }
    
    public void setLastName(String ln)
    {
        name = ln;
    }
    
    public void setAge(int a)
    {
        age = a;
        if((a < UPPER_AGE)&&(a != 0)||(a == UPPER_AGE)){
            System.out.println("You're alive!");
        }
        else{
            System.out.println("Error");
    
        }
    }
    
    public void setGender(String g)
    {
         gender = g;
        if (gender.equals("male"))
        {
            gender = male;
            System.out.println("You're a guy.");
        }
        else if (gender.equals("female"))
        {
            gender = female;
            System.out.println("You're a girl.");
        }
        else {
            System.out.println("Try again.");
    }
}
    
    public void setMartialStatus(String m)
    {
        maritalStatus = m;
        if( maritalStatus == "MARRIED")
        {
            System.out.println("You're married.");
        }
        if( maritalStatus == "DIVORCED")
        {
            System.out.println("You're divorced.");
        }
        if( maritalStatus == "SINGLE")
        {
            System.out.println("You're single.");
        }
         if( maritalStatus == "WIDOWED")
        {
            System.out.println("You're widowed.");
        }
    }
    public void setPetOwner(String o)
    {   ownerStatus = o;
        if(ownerStatus == yes)
        {
            System.out.println("owns a pet");
        }
        else{
            System.out.println("doesn't own a pet");
        }
    }
    public void makeFullName()
    {
        fullName = fname + "" + lName;
}
    public void setTitle()
    {
        String title;
      if(gender==female)
      {
        "Ms."= title;
    }
    else{
        "Mr." = title;
    }
}
public void pronoun()
{
    if(gender==female)
    {
        "She" = pronoun;
    }
    else {
        "He" = pronoun;
    }
}

public void eligibility()
{
    if((age > 18)&&(maritalStatus == "SINGLE"))
    {
        System.out.println(pronoun + " is eligible to be married.");
    }
}

public void personInformation()
{
    System.out.println(title + fullName + "is a" + maritalStatus + gender +",age" + age);
    System.out.println(pronoun + eligibility + "and" + ownerStatus);
}
        
          
  
    
        