 */
public class BirthdayDates
{
    
    private long birthdayDates;
    
    Calendar calendar = new GregorianCalendar();
    
    Calendar cal = new GregorianCalendar();
    SimpleDateFormat dateFormat = new SimpleDateFormat("dd-MM-yyyy");
    dateFormat.setTimeZone(cal.getTimeZone());
    System.out.println(dateFormat.format(cal.getTime()));
    
    int year       = calendar.get(Calendar.YEAR);
    int month      = calendar.get(Calendar.MONTH); 
    int dayOfMonth = calendar.get(Calendar.DAY_OF_MONTH); 
    int dayOfWeek  = calendar.get(Calendar.DAY_OF_WEEK);
    int weekOfYear = calendar.get(Calendar.WEEK_OF_YEAR);
    int weekOfMonth= calendar.get(Calendar.WEEK_OF_MONTH);
       
    int hour       = calendar.get(Calendar.HOUR);        
    int hourOfDay  = calendar.get(Calendar.HOUR_OF_DAY); 
    int minute     = calendar.get(Calendar.MINUTE);
    int second     = calendar.get(Calendar.SECOND);
    int millisecond= calendar.get(Calendar.MILLISECOND);
    
    Date now = new Date();
    
    
    DateFormat longDf = DateFormat.getDateInstance(DateFormat.LONG);
    private DateFormat dateFormatter; 
    
    
   
    
    private String Name;
    
    /**
     * Constructor for objects of class 
     */
    public BirthdayDates()    {
        
        
        
        birthdayDates = now();
        Calendar now = Calendar.getInstance();
        dateFormatter = DateFormat.getDateInstance();
    }
    
  
 
    
    public void set(){
        calendar.set(Calendar.YEAR, 1996);
        calendar.set(Calendar.MONTH, 3);
        calendar.set(Calendar.DAY_OF_MONTH, 1);
        
    }
    
    public void get(){
        int year = calendar.get(calendar.YEAR); 
        int month = calendar.get(calendar.MONTH);
        int dayofMonth = calendar.get(calendar.DAY_OF_MONTH);
        
    }
    
    private long now(){
        return new Date().getTime();
    }   
    
    public String Name(){
        return Name;
    }
    
    private Date getBirthdayDates() {
        return new Date(birthdayDates);
    }
    
    public String toString() {
        return dateFormatter.format(getBirthdayDates());
    }
    
     }