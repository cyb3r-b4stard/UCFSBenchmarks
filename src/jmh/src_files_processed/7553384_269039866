
import java.util.GregorianCalendar;
import java.util.Calendar;
import java.lang.StringBuilder;
import java.util.ArrayList;

public class Evento
{
    private String nome;
    private int numParMAX;
    private GregorianCalendar dataIns;
    private int condMeteo;
    
    
    public Evento()
    {
        this.nome = new String ();
        this.numParMAX = 0;
        this.dataIns = new GregorianCalendar(0000, 00, 00);
        this.condMeteo = 0;
    }
    
    public Evento(String nNome, int num, GregorianCalendar dataIns, int cond)
    {
        this.nome = nNome;
        this.numParMAX = num;
        this.dataIns = (GregorianCalendar) dataIns.clone();
        this.condMeteo = cond;
    }
    
    public Evento(Evento e) {
        this.numParMAX = e.getNumPar();
        this.dataIns = (GregorianCalendar) e.getDataIns().clone();
        this.condMeteo = e.getCondMeteo();
    }
    
    public String getNome () {
        return this.nome;
    }
    
    public int getNumPar (){
        return this.numParMAX;
    }
    
    public GregorianCalendar getDataIns (){
        return this.dataIns;
    }
    
    public int getCondMeteo (){
        return this.condMeteo;
    }
    
    public void setNome (String nNome) {
        this.nome = nNome;
    }
    public void setNumPar (int nNumPar){
        this.numParMAX = nNumPar;
    }
    
    public void setDataIns (GregorianCalendar nDataIns) {
        this.dataIns = (2014,1,1);        
    }
    
    public void setCondMeteo (int nCondMeteo){
        this.condMeteo = nCondMeteo;
    }
    
    public boolean equals(Object obj) { 
        if(this == obj) return true; 
        if((obj == null) || (this.getClass() != obj.getClass())) return false;
        Evento e = (Evento) obj;
        return this.nome.equals(e.getNome()) && this.dataIns.equals (e.getDataIns ());
    }
    
    public String toString() {
        StringBuilder str = new StringBuilder();
        return str.append("O Evento chama-se ").append(nome).append(" e Ã© no dia ").append(dataIns).toString();
    }
    
    public Evento clone (){
        return new Evento(this);
    }
        
}