import java.io.*;
import java.util.*;
public class game
{
 public static void main(String args[])
 {
  int scorecomp=0;
  int scoreuser=0;
  Scanner kbReader = new Scanner(System.in);
  System.out.println("do you want to play");
  System.out.println("yes or no?");
  String ans = kbReader.nextLine( );
  switch(ans)
  {
    case "yes":
     
     
      System.out.print('\u000C');
      System.out.println("Choose your weapon!");
      System.out.println("rock?");
      System.out.println("paper?");
      System.out.println("scissors?");
      System.out.println("to quit enter = \"bye\"");
      String ans2 = kbReader.nextLine( );
        if (ans2.equals("bye"))
        { 
          System.out.println("goodbye!!");
          break;
         }
        else 
         { double ans3 = Math.random();
           if(0<ans3 && ans3<=.33)
            {
             String ans4 = "rock";
               if( ans4.equals("rock") && ans2.equals("rock"))
               { 
                   System.out.println("its a tie");
                   System.out.println("You played rock");
                   System.out.println("the computer played rock");
                   ++scoreuser;
                   ++scorecomp;
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                }
                else if ( ans4.equals("rock") && ans2.equals("paper"))
                { 
                    System.out.println("you win!!");
                    System.out.println("You played paper");
                   System.out.println("the computer played rock");
                   ++scoreuser;
                  
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                  
                }
                else if ( ans4.equals("rock") && ans2.equals("scissors"))
                {
                   System.out.println("You lose :(");
                   System.out.println("You played scissors");
                   System.out.println("the computer played rock");
                   ++scorecomp;
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                }
                
            }
        
           else if(.33< ans3 && ans3 <= .66)
           { 
             String ans4 = "paper";
               if( ans4.equals("paper") && ans2.equals("rock"))
               { System.out.println("You lose :(");
                   System.out.println("You played rock");
                   System.out.println("the computer played paper");
                   ++scorecomp;
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                   
                }
                else if ( ans4.equals("paper") && ans2.equals("paper"))
                {
                   System.out.println("its a tie");
                   System.out.println("You played paper");
                   System.out.println("the computer played paper");
                   ++scoreuser;
                   ++scorecomp;
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                }
                else if ( ans4.equals("paper") && ans2.equals("scissors"))
                { System.out.println("you win!!");
                    System.out.println("You played scissors");
                   System.out.println("the computer played paper");
                   ++scoreuser;
                  
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                  
                }
            }
            else
            { 
             String ans4 = "scissors";
               if( ans4.equals("scissors") && ans2.equals("rock"))
               { 
                   System.out.println("you win!!");
                   System.out.println("You played rock");
                   System.out.println("the computer played scissors");
                   ++scoreuser;
                  
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                  
                }
                else if ( ans4.equals("scissors") && ans2.equals("paper"))
                { System.out.println("You lose :(");
                    System.out.println("You played paper");
                   System.out.println("the computer played scissors");
                   
                   ++scorecomp;
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                }
                else if ( ans4.equals("scissors") && ans2.equals("scissors"))
                { 
                    System.out.println("its a tie");
                   System.out.println("You played scissors");
                   System.out.println("the computer played scissors");
                   ++scoreuser;
                   ++scorecomp;
                   System.out.println("user score: " + scoreuser);
                   System.out.println("computer score: "+ scorecomp);
                }
                
            }
           
         }
         
           
        }
        break;
        
    
     
   case "no":
        System.out.print('\u000C');
        System.out.print("ok, see you later!");
        break;
    default: 
        System.out.print('\u000C');
        System.out.print("sorry error please try again! :(");
        break;
    }
 }
} 