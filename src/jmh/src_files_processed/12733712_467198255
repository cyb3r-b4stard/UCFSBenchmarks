import java.util.ArrayList;
import java.util.Scanner;

public class Vokabelsammlung 
{
    
    private ArrayList<Vokabel> liste;
    private Scanner myScanner;
    
    public Vokabelsammlung()
    {
        liste = new ArrayList<Vokabel>();
        myScanner = new Scanner(System.in);
    }
    
    public void eingabe()
    {
        Vokabel vok;
        vok = new Vokabel();
        String input;
        System.out.print("Deutsches Wort: ");
        input = myScanner.nextLine();
        vok.setzeDeutsch(input);
        System.out.print("Englisches Wort: ");
        input = myScanner.nextLine();
        vok.setzeEnglisch(input);
        liste.add(vok);
        
    }
    
    public void gebeDeutschEnglisch()
    {
        Vokabel vok;
        int i = 0;
        for (i=0; i < liste.size() ; i++) 
        {
           vok = liste.get(i);
          liste.get(i).druckeDeutschEnglisch;
        }

    }
    
    
    
    
}