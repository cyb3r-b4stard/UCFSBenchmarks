import java.util.Random;
import java.lang.String;
import java.util.HashMap;
/**
 * ####### ####### ############# ## ####### ### ### ##### ### # - #
 * 
 * @###### #### #
 * @####### #.#.#
 */
public class Terning
{
    private int terningVerdi;
    private static HashMap<Integer, String> hashMap; 
    private final String TYPE = "Plastikk"; 
    

    /**
     * Constructor for objects of class Terning
     */
    public Terning()
    {
        this.terningVerdi = 0;
        this.hashMap = new HashMap(); 
        for (int i = 1; 
        i <= 6;
        i++)
        {
            this.hashMap.put(i, TYPE); 
        }
    }
    
    /** 
     * Kaster terningen
     */
    public void kastTerning() 
    {
        this.terningVerdi = new Random().nextInt(6);
        terningVerdi++; 
        System.out.println("Terningen har nÃ¥ verdien " + this.terningVerdi);
    }
    public void kastTerning(int antallKast) 
    {
        for (int kast = 1;
        kast <= antallKast;
        kast ++)
        {
            kastTerning();
        }
    }
    private void removeFromHashMap(int nummer) 
    {
        this.hashMap.remove(nummer);
    }
    
    public void printHashMap() 
    {
        for (int key : this.hashMap.keySet())
        {
            System.out.println(key + " :  " + this.hashMap.get(key));
        }
    }
    
    public void test() 
    {
        Terning object = new Terning();
        System.out.println("Tilfeldig tall: " + this.terningVerdi);
        System.out.println("Totalt antall terningkast: " + hashMap.size());
        System.out.println("Fjerner terningsverdien 6!");
        removeFromHashMap(6);
        System.out.println("Hvilken type? " + TYPE);
    }
    
    
        
    