
/**
 * ##### # ########### ## ##### ###### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Heater
{
  private int temperature; 
  private int min;         
  private int max;         
  private int increment;   

  /**
   * Constructor for objects of class Heater
   */
  public Heater()
  {
      temperature = 15;
      min = -20;
      max = 40;
      increment = 5;
  }

  /**
   *Returns current temperature
   */
  public int getTemperature()
  {
   return temperature; 
  }
  
  /**
   * Sets the increment of temperature change.
   */
  public void setIncrement()
  {
   if(increment >0 )
  {
    increment = increment;
  }
  else
  {
    System.out.println("Increment must be positive value");
  }
  
}


  /**
   * Makes temperature warmer by 5 degrees
   */
  public void warmer(integer)
  {
    if (temperature < max)
  {
   temperature = temperature + increment;
  }
   else 
  {
    System.out.println("Error: Maximum temperature is 40");
  }
  

}
  /**
   *  Makes temperature cooler by 5 degrees
   */
  public void cooler()
  {
    if (temperature > min)
    {
    temperature = temperature - increment;
  }
  else
  {
    System.out.println("Error: Minimum temperature is -20");
  }
}

  /**
   * Prints details about temperature
   */
  public void printDetails()
  {
    System.out.println("The current temperature is:" + temperature);
    System.out.println("The maximum temperature is:" + max);
    System.out.println("The minimum temperature is:" + min);
    System.out.println("The increment of temperature change is:" + increment);
  }
  
 

}
