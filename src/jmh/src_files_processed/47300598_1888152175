
/**
 * ##### ########
 */
import java.util.*;
import javax.swing.*;

public class Mecanico extends MiembroTaller
{
    private ArrayList<FichaReparacion> listaFichasAsignadas;
    
    /**
     * Constructor
     */
    public Mecanico(String no, String ap1, String ap2, String d, int t, int sal)
    {
        super(no, ap1, ap2, d, t, sal);
        listaFichasAsignadas = new ArrayList<FichaReparacion> ();
    }
    
    /*METODOS*/
    public void addFichaAMecanico(FichaReparacion f)
    {
        listaFichasAsignadas.add(f);
    }
    
    public void verMisFichas(){
        for (int i=0; i<listaFichasAsignadas.size(); i++){
            System.out.println(listaFichasAsignadas.get(i));
        }
    }
    
    public void modificarFicha(){
        FichaReparacion.setEstadoReparacion(EstadoReparacion estadoReparacion);
        
    }
}