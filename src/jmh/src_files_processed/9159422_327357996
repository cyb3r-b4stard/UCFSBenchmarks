import javax.swing.*;


public class ExJanela2 extends JFrame
{
    JButton but;
    JLabel texto;
    JPanel painel;
   
    
    public ExJanela2()
    {
        super("Aplicação Swing");
        but = new JButton( "Botão");
        texto = new JLabel("Quantidade de clicks: 0");
        painel = new JPanel();
        
        painel.setLayout(new BoxLayout(painel,BoxLayout.Y_AXIS));

        painel.add(but);
        painel.add(texto);            
        
        getContentPane().add(painel);
    }
        
    


