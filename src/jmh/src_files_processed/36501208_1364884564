

public class Hedizung
{
    
    public int temperatur;
    public int schrittweite;
    public int min;
    public int max;
    public Hedizung(int temperatur_now, int minimum_temperatur, int maximum_temperatur) 
    {
        temperatur = temperatur_now;
        min = minimum_temperatur;
        max = maximum_temperatur;
        schrittweite = 5;
    }

    public int schrittweite ()
    {
        return schrittweite;
    }
    
    public int temp()
    {
        return temperatur;
    }
       
    public void waermer()
    {
        temperatur = temperatur + 5;
        if temperatur > max
        temperatur = max
    }
    
    public void kaelter()
    {
        temperatur = temperatur - 5;
    }
}