
import java.util.*;

public class Lab2{
    public static void main(String[]args){
        int hours;

        Scanner imput = new Scanner(System.in);
        System.out.print("Please enter your full name (First, Last): ");
        String fullname = imput.nextLine();
        System.out.print("Please enter hours ");
        hours = imput.nextInt();
        System.out.print("Please enter amount per hour ");
        double pay = imput.nextDouble();
        double gross_pay = hours*pay;
        System.out.printf("Your gross pay is: $%.2f%n", gross_pay);
        double net_pay_taxes = gross_pay - gross_pay*.14; 
        System.out.printf("Your net pay after taxes is: $%.2f", net_pay_taxes);              
        double net_pay_clothes = net_pay_taxes - net_pay_taxes*.10; 
        System.out.println();
        System.out.printf("Your net pay after clothes is: $%.2f", net_pay_clothes);
        double net_pay_supplies = net_pay_clothes - net_pay_clothes*.01; 
        System.out.println();
        System.out.printf("Your net pay after school supplies is: $%.2f", net_pay_supplies);
        double bonds1 = imput.nextDouble();
        System.out.println();
        System.out.print("How much money do you want to invest in savings bonds? (enter amount): ");
        If bonds1>net_pay_supplies then System.out.print("Error: You cannot invest more than you have");
        double bonds2 = net_pay_supplies - bonds1;
        If bonds1 > net_pay_supplies then System.out.print("Error: You can not invest more than you have");
        System.out.printf("Your net pay after your saving bond investment is: $%.2f", bonds2);
        double bonds3 = (bonds2)*.5;
        System.out.printf("You parents matched half of your investment $%.2f", bonds3.) 
        System.out.println();
        System.out.print("Thank you" String fullname "Goodbye";
        

        
    }
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
}     