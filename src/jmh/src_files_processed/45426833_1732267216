    /**
     * Diese Methode legt fest, was passiert, wenn man auf den "Anmelden"-Button klickt.
     */
    private void ButtonAnmeldenActionPerformed(java.awt.event.ActionEvent evt) {
        if(angemeldet != true){
        chat = new ChatClient(TextFieldIPChatserver.getText(), 3000, jTextArea1);
        angemeldet = true;
        String nickname=TextFieldNickname.getText();
        chat.send("°"+nickname);
     }
    }
    
    /**
     * Diese Methode legt fest, was passiert, wenn man auf den "Senden"-Button klickt.
     */
    private void ButtonSendenActionPerformed(java.awt.event.ActionEvent evt) {
        String nachricht=jTextField2.getText();
        if (nachricht.length()>0) {
            chat.send(nachricht);
        }
    }

    /**
     * Diese Methode legt fest, was passiert, wenn man auf den "Abmelden"-Button klickt.
     */
    private void ButtonAbmeldenActionPerformed(java.awt.event.ActionEvent evt) {
        chat.send('²'nickname+ "Hat den chat verlassen")
        chat.disconnect();
        angemeldet = false;
    }


    
