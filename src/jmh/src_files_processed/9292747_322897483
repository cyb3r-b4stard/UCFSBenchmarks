public class HotelOccupancy{




int numberFloors;
double hotelOccupancyRate;
double hotelOccupancyPercent;


public void main (String [] args){


	DecimalFormat df = new DecimalFormat ("0.00");



	Scanner keyboard = newScanner(System.in);


	System.out.println("How many floors are there in this hotel?");
	
	numberFloors = keyboard.nextInt();

	

		double totalRooms = 0;
		double totalRoomsOccupied = 0;

		System.out.println("How many rooms are on floor " + floor);
			double rooms = keyboard.nextDouble();
			
		totalRooms = totalRooms + rooms;

		
		System.out.println("How many rooms on floor " + floor + " have guests?");
			double occupiedRooms = keyboard.nextDouble();
			
		totalOccupiedRooms = totalOccupiedRooms + occupiedRooms;

	
	}  

		hotelOccupancyRate = (totalOccupiedRooms/totalRooms);

		

		hotelOccupancyPercent =  df.format ((double)hotelOccupancyRate);

	hotelOccupancyRate = (hotelOccupancyPercent * 100);

	System.out.println("The total amount of rooms in the hotel is " + totalRooms);

	System.out.println("The total rooms that are occupied in the hotel " +
			"are " + totalRoomsOccupied);

	System.out.println("The total rooms that are empty in the hotel are " +
			totalRooms - totalRoomsOccupied);

	System.out.println("The percent of rooms occupied, or the Hotel Occupancy rate"+
			" is " + hotelOccupancyRate);


}  
}  
