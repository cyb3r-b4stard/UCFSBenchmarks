public class QuickSort
{
    int [] zahlen= new int[10];
    public QuickSort(int pAnzahl)
    {
       for(int a=0;a<pAnzahl;a++)
        {
            zahlen[a]=(int)(Math.random()*10);
            
        }
    }
    public void sort()
    {
        int k=1;
        int g=9;
        int pivot=zahlen[0];
        int pfeilKl=zahlen[k];
        int pfeilGr=zahlen[g];
        while(pfeilKl<pfeilGr)
        {
            while(pfeilKl<pivot)
            {
                k++;
            }
            while(pfeilGr>pivot)
            {
                g--;
            }
            tausche(k,g);
            if(g<k)
            {
                taussche(pivot,pfeilGt);
            }
    }
    public void tausche(int index1, int index2)
    {
        int zInd=zahlen[index1];
        zahlen[index1]=zahlen[index2];
        zahlen[index2]=zInd;
    }
    public void teile(int [] kette)
    {
       int laenge = kette.length/2;
    }
}