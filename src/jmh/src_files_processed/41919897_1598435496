import java.util.ArrayList;
import java.util.Iterator;
/**
 * ##### # ########### ## ##### ##### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Event
{
    private String eventName;
    private double time;
    private Person contestant;
    private boolean longTime;

    /**
     * Constructor for objects of class Event
     */
    public Event(String eventName, double time, Person contestant, boolean longTime)
    {
         if(time > 0){
            time = time;
        }
        else{
            time = 0;
        }
        this.eventName = eventName;
        this.time = time;
        this.longTime = longTime;
        this.contestant = contestant;
    }

    /**
     *
     */
    public String getEventName()
    {
        return eventName;
    }
    
    /**
     *
     */
    public double getTime()
    {
        return time;
    }
    
    /**
     *
     */
    public Person getContestant()
    {
        return contestant;
    }
    
    /**
     *
     */
    public boolean getlongTime()
    {
        return longTime;
    }
    
    /**
     *
     */
    public boolean newRecord(double newTime, Person recordSetter)
    {
           Person person = (Person)it.next();
           if(newTime < person.newTime()){  
               newTime = person; 
               newTime = person.getlongTime();
            }
           return recordSetter;
       }
    }
}