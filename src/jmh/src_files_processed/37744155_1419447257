import java.awt.*;
import objectdraw.*;
/**
 * ##### # ########### ## ##### ############# ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class HotAirBalloon 
{private int BALLOON_SIZE = 50;
 private int BASKECT_SIZE=20;
 private int LEFT=10;
 private int TOP=10;
 private int baskectLeft;
 private int baskectTop;
 private int baskectRight;
 private int balloonRight;
 private FilledOval balloon;
 private FilledRect baskect;
 private RandomIntGenerator randColor=new RandomIntGenerator (0,255);
 private Color newColor (randColor.nextValue(),randColor.nextValue(),randColor.nextValue());
  
  
  public HotAirBalloon(DrawingCanvas balloonCanvas)  {

 baskectLeft=LEFT+(BALLOON_SIZE-BASKECT_SIZE);
 baskectTop=TOP+BALLOON_SIZE;
 baskectRight=baskectLeft+BASKECT_SIZE;
 balloonRight=LEFT+ BALLOON_SIZE;

  {balloon = new FilledOval ( LEFT,TOP,BALLOON_SIZE,BALLOON_SIZE, balloonCanvas);
   new Line ( LEFT,TOP,baskectLeft,baskectTop,balloonCanvas);
   new Line ( balloonRight,TOP, baskectRight, baskectTop,balloonCanvas);
   baskect= new FilledRect( baskectLeft,baskectTop, BASKECT_SIZE, BASKECT_SIZE,balloonCanvas);
}
      
}
}