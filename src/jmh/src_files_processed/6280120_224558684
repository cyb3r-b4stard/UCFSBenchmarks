        System.out.println("Please insert a positive amount of money.");
    }
    
}
    
public int purchaseTickets()
    {
        int numberOfTickets;
        
        numberOfTickets = balance / price;
        
        return numberOfTickets;
    }
}
    
    
   
   
   
  