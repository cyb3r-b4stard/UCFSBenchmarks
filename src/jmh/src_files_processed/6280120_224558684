                    System.out.println("==================");
                    System.out.println("==The BlueJ Line==");
                    System.out.println("==Ticket " + i);
                    System.out.println("= " + price + "cents. ");
                    System.out.println("==================");
                    
                    i++;
                }
                total += balance;
                
                refund = refundBalance();
            }
            
                if (refund == 0)
                {
                    system.out.println("No chage given.");
                }
                else
                {
                    System.out.println("Amount to refund: " + refound + " cents.");
                }
                
                balance = 0;
