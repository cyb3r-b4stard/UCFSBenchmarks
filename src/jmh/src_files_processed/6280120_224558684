public class TicketMachine
{
    private int price;
    private int balance;
    private int total;
    private int refund;
    private int tickets;
    
public TicketMachine(int ticketCost) 
    {
        price = ticketCost;
        balance = 0;
        total = 0;
        refund = 0;
        tickets = 0;
    }
    
public int getprice()
   {
       return price;
   }
   
public void insertMoney(int amount)
  {
      if (amount > 0)
      {
          balance += amount;
          
        }
        else
        {
            System.out.println("Please insert a sensible amount money");
        }
    }
   
    public void printTicket()
    {
        if (balance > 0)
