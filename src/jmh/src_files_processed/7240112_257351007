import java.util.*;
import java.lang.*;

public class Perifericos extends Componente
{
  Tipo_Perifericos t_P;
  private enum Especial{Idioma(String("ESP"),String"ENG",String"CHN",JAP),N_Teclas(1,2,3,4,5),Imp(Laser,Tinta)};
  
  public Perifericos()
  {
      super();
      this.Especial = "XX";      
   }
  public Perifericos(String Especial)
  {
      super();
      this.Especial = Especial;
    }
  public String getEspecial()
    {
        return Especial;
    }
  public void setEspecial()
  {
      if(this.t_P == Tipo_Perifericos.Teclado)
        this.Especial = Especial();
      if(this.t_P == Tipo_Perifericos.Ratones)
        this.Especial = Especial.N_Teclas();
      if(this.t_P == Tipo_Perifericos.Impresoras)
        this.Especial = Especial.Imp();
    }
    public void PrintInfo()
    {
        super.printComponente();
        if(this.t_P == Tipo_Perifericos.Teclado)System.out.println("Tipo de periferico: Teclado"+"Idioma:"+getEspecial());
        if(this.t_P == Tipo_Perifericos.Ratones)System.out.println("Tipo de periferico: Raton"+"Numero de teclas:"+getEspecial());
        if(this.t_P == Tipo_Perifericos.Impresoras)System.out.println("Tipo de periferico: Impresora"+"Tipo de Impresion:"+getEspecial());
    }
}