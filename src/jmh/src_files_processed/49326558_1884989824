
/**
 * ##### # ########### ## ##### ############ ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class NakladneAuto extends Auto {
     public double kolkoUvezie;
    public NakladneAuto(String znacka, double najazdene, double spotreba, double kolkoUvezie) {
        super(znacka,najazdene,spotreba);
        this.kolkoUvezie = kolkoUvezie;

    }
    
    public boolean vymenaOleja()
    {if(dajNajazdeneKm()>5000)
       {
           return true;}
        else
        {
            return false;
        }
    }
    @Override
    public String toString()
    {
     return super.toString() + "vymena oleja sa: " + vymenaOleja());
    }
}