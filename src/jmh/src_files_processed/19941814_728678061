    public Ticket(){
    }

    public Ticket(Passenger user, String flight, String departure, String arrival, String seat, String boucherCode, int price){
        
     this.user=user;
     this.flight=flight;
     this.departure=departure;
     this.arrival=arrival;
     this.seat=seat;
     this.boucherCode=boucherCode;
     this.price=price;
     
    }
     
    
