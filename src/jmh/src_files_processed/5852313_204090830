
/**
 * ##### # ########### ## ##### ######## ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Racional {

private int numerador, denominador;

public Racional() {
numerador = 1;
denominador = 1;
}

public Racional(int num, int den){
setNumerador(num);
setDenominador(den);
simplificar(this);
}

public Racional(Racional rac){
numerador = rac.getNumerador();
denominador = rac.getDenominador();
}

public void setNumerador(int num){
if(num &gt ==0){
numerador = num;
}
else
numerador = 1;
}

public void setDenominador(int den){
if (den &gt== 0)
denominador = den;
else
denominador = 1;
}

public int getNumerador(){
return numerador;
}

public int getDenominador(){
return denominador;
}


public Racional suma (Racional rac){
int den = this.getDenominador() * rac.getDenominador();
int num = den / this.getDenominador() * this.getNumerador() + den / rac.getDenominador() * rac.getNumerador();
Racional resultado = new Racional(num,den);
simplificar(resultado);
return resultado;
}

public Racional resta (Racional rac){
int den = this.getDenominador() * rac.getDenominador();
int num = - den / this.getDenominador() * this.getNumerador() + den / rac.getDenominador() * rac.getNumerador();
Racional resultado = new Racional(num,den);
simplificar(resultado);
return resultado;
}

public Racional multiplicacion(Racional rac){
int num,den;
num = this.getNumerador() * rac.getNumerador();
den = this.getDenominador() * rac.getDenominador();
Racional resultado = new Racional(num,den);
simplificar(resultado);
return resultado;
}

public Racional division (Racional rac){
int num,den;
num = this.getNumerador() * rac.getDenominador();
den = this.getDenominador() * rac.getNumerador();
Racional resultado = new Racional(num,den);
simplificar(resultado);
return resultado;
}


public double numeroFraccionario(){
double fraccionario = (double)this.getNumerador()/(double)this.getDenominador();
return fraccionario;
}

public int Mcd(int numero1, int numero2){
int mayor, menor, residuo;
mayor = numero1;
if (numero1 &lt ==numero2){
mayor = numero2;
menor = numero1;
}
else{
mayor = numero1;
menor = numero2;
}
for ( int contador = 0; menor != 0; contador++){
residuo = mayor % menor;
mayor = menor;
menor = residuo;
}
return mayor;
}

public void simplificar(Racional rac){
int num, den;
int mcd = Mcd(rac.getNumerador(), rac.getDenominador());
num = rac.getNumerador() / mcd;
den = rac.getDenominador() / mcd;
rac.setNumerador(num);
rac.setDenominador(den);
}

public String toString(){
return(numerador + "/" + denominador);
}

public boolean equals(Racional rac){
if (this.getNumerador() == rac.getNumerador() amp==amp; this.getDenominador() == rac.getDenominador())
return true;
else
return false;
}
}