import java.util.Random;
import java.util.Scanner;

public class HILOLT
{
    public static void main(String[] args)
    {
        Random r = new Random();
        Scanner keyboard = new Scanner(System.in);
        int guesses = 0;

        int n = 1 + r.nextInt(100);

        System.out.println("I'm thinking of a number between 1 and 100. You have 7 guesses.")
        int g = keyboard.nextInt();
        guesses++;

        while (g != n && tries < 7)
        {
            if (g > n)
            {
                System.out.println("Sorry you are too high.");
                System.out.println("Guess again.");
                g = keyboard.nextInt();
            }
            else if (g < n)
            {
                System.out.println("Sorry you are too low.");
                System.out.println("Guess again.");
                g = keyboard.nextInt();
            }
            tries++;
        }
        if (g == n)
        {
            System.out.println("Good guess! You got it right!");
        }
        else if (guesses >= 7)
        {
            System.out.println("Sorry, you've reached your maximum number of guesses.");
        }
    }
}
            
            
            
            
            
            
            