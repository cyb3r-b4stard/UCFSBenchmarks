/**
 *Método para agregar Materias
 */
    
    public void agregarMateria( Materia m) {
        if(!(lista.contains(m))){
      lista.add(m);
}
}
public String getMateria(){
   String valor=null;
   for(Iterator it=lista.iterator();it.hasNext();)
   {
     valor=(String) it.next();  
    }
     return valor;
}
     public int getmateria(){
      return lista.size();
}
/**
 *Método para eliminar Materias
 */
    public void eliminarMateria(String m) {
    if(lista.contains(m))
    {
      lista.remove(m);
    }
}
/**
 *Método para agregar Profesores
 */
    
    public void agregarProfesores(Profesores p) {
        if(!(listaProfesores.contains(p))){
      listaProfesores.add(p);
}
}
public String getProfesores( ){
   String valor=null;
   for(Iterator it=listaProfesores.iterator();it.hasNext();)
   {
     valor=(String) it.next();  
    }
     return valor;
}

/**
 *Método para eliminar Profesores
 */
    public void eliminar(Profesores p) {
    if(listaProfesores.contains(p))
    {
      listaProfesores.remove(p);
    }
}
     public int getalumno(String objeto){
      return alumnos.size();
}    
/**
 *Método para agregar Alumnos
 */
public void agregarAlumnos(String objeto) {
      alumnos.add(objeto);      
        }
/**
 *Método para eliminar Alumnos
 */
    public void eliminarAlumnos(String objeto) {
      alumnos.remove(objeto);
    }
/**
 *Método para agregar grupos
 */
public void agregargrupos(Grupos objeto) {
      grupos.add(objeto);      
}
     public int getgrupo(Grupos objeto){
      return grupos.size();
}
/**
 *Método para eliminar Grupos
 */
    public void eliminargrupos(Grupos objeto) {
     grupos.remove(objeto);
    }
