     * Constructor for objects of class Academia_De_Musica
     */
    public Academia_De_Musica()
    {
      this.nombre_de_academia=nombre_de_academia;
      this.dirección=dirección;
      this.telefono=telefono;
      lista=new ArrayList<Materia>();
      listaProfesores=new ArrayList<Profesores>();
      alumnos=new ArrayList<String>();
      grupos=new ArrayList<Grupos>();
    }
