import java.io.*;
                                       /**   #### ####### ### #### ###########    */         
public class BANKING
{       
    static void TransAction()throws IOException
    {   
        InputStreamReader read=new InputStreamReader(System.in);
        BufferedReader in=new BufferedReader(read);
        System.out.println();
        System.out.println("\t\t\t\t\t     ======== GREETINGS ==========                   ");
        System.out.println("\t\t\t\t\t       WELCOME TO THE BLUEJ' BANK                    ");
        System.out.println("\t\t\t\t\t     =============================                   ");
        System.out.println();
        System.out.println();
        System.out.println();
        System.out.println();
        System.out.println();    
        System.out.println("Enter Your Account Number");
        long q=(long)Integer.parseInt(in.readLine()); 
        System.out.println("");
        System.out.println("Welcome Atharva,");
        System.out.println("We’re glad to have you as our customer. We recognize there are many options in choosing a financial institution and ");
        System.out.println("                         “Thank You” for choosing The Bluej Bank to be your bank.");
        System.out.println("Please select the follownig options:- ");
        System.out.println("");     
        for(int j=1;j>0;j++)
        {
            System.out.println();
            System.out.println("1. S-B ACCOUNT TRANSACTION");
            System.out.println("2. R-D ACCOUNT TRANSACTION");
            System.out.println("3. EXIT");
            System.out.println();
            int s=Integer.parseInt(in.readLine());
            System.out.println();
            switch(s)
            {
                case 1:
                System.out.println();
                double bal=500; 
                for(int i=1;i>0;i++)
                {    
                    System.out.println("1. DEPOSIT");
                    System.out.println("2. WITHDRAWAL");
                    System.out.println("3. DEMAND DRAFT");
                    System.out.println("4. CHECK BALANCE");
                    System.out.println("5. EXIT");
                    System.out.println("Enter your choice");
                    System.out.println();
                    int ch=Integer.parseInt(in.readLine()); 
                    switch(ch)
                    {
                        
                        case 1:
                        System.out.println("Enter S/B Account Number");
                        System.out.println();
                        System.out.println("Your Initial Balance is Rs. 500.0");
                        System.out.println();
                        System.out.println("A. CASH");
                        System.out.println("B. CHEQUE");
                        System.out.println("C. TERM DEPOSIT");
                        String w=in.readLine(); 
                        switch (w)
                        {
                            case "A":
                            System.out.println("Enter the amount to be deposited");
                            double dep=(double)Integer.parseInt(in.readLine());
                            bal=(bal+dep);
                            System.out.println("Your Account Number:"+q);
                            System.out.println("You Have Deposited An Amount of Rs."+dep+" In Your BLUEJ Bank Account");
                            if(dep==0)
                            System.out.println("You Have Not Deposited Any Amount In Your BLUEJ Bank Account");
                            System.out.println("Your Balance After Deposition Is Rs."+bal);
                            break;
                            case "B":
                            System.out.println("From which Bank the cheque is drawn from?");
                            String b=in.readLine();
                            System.out.println("Drawn in favour of- ?");
                            String d=in.readLine();
                            System.out.println();
                            System.out.println("What is the cheque number?");
                            String chn=in.readLine();
                            System.out.println();
                            System.out.println("What is the amount");
                            double camt=(double)Integer.parseInt(in.readLine());
                            System.out.println();
                            System.out.println();
                            System.out.println("Name of the bank:"+b);
                            System.out.println("In favour of:"+d);
                            System.out.println("Cheque number:"+chn);
                            System.out.println("Amount:"+camt);
                            System.out.println("Amount will be deposited subject to clearance of cheque");
                            bal=bal+camt;
                            System.out.println("Balance after Deposition of cheque ="+bal);
                            break;
                            case "C":
                            System.out.println("What is the term of deposit (3 month deposit or 6 month deposit)??");
                            int a1=Integer.parseInt(in.readLine());
                            if(a1==3)
                            {
                                 System.out.println("Enter the amount(principal) for term Deposit");
                                 double am=Integer.parseInt(in.readLine());
                                 int r1=7;
                                 System.out.println("Interest on maturity "+(am*3*r1)/1200);
                                 System.out.println("Amount ="+(am*3*7)/1200+am);
                                 System.out.println("Balance="+(bal+(am*3*7)/1200+am);
                            }
                            else if(a1==6)
                            {
                                int r2k=8;
                                System.out.println("Enter the amount(principal) for term Deposit");
                                double a1m=Integer.parseInt(in.readLine());
                                System.out.println("Interest on maturity "+(a1m*3*r2k)/1200);
                                System.out.println("Amount ="+(a1m*3*7)/1200+a1m); 
                            }
                            System.out.println();
                            break;
                        }
                        case 2: 
                        System.out.println("X. CASH");
                        System.out.println("Y. CHEQUE");
                        String g=in.readLine();
                        switch(g)
                        {
                            case "X":
                            System.out.println("Enter the amount to be withdrawn");
                            double wit=(double)Integer.parseInt(in.readLine());
                            System.out.println("You Have Withdrawn An Amount Of Rs."+wit+" From Your BLUEJ Bank Account");
                            if(wit==0)
                            System.out.println("You Have Not Withdrawn Any Amount From Your BLUEJ Bank Account");
                            else if(bal<wit)
                            System.out.println("Insufficient Balance");
                            bal=bal-wit;           
                            System.out.println("Your Remaining Balance Is Rs."+bal);
                            System.out.println("Thank You For Using The BLUEJ Bank");
                            System.out.println("********** HAVE A GOOD DAY **********");
                            break;
                            case "Y":
                            System.out.print("Drawn in favour of- ?");
                            String o=in.readLine();
                            System.out.println();
                            System.out.println("Enter the Amount:");
                            double a=(double)Integer.parseInt(in.readLine());
                            System.out.println();
                            if(bal<a)
                            System.out.println("Insufficient balance");
                            bal=bal-a;
                            System.out.println();
                            System.out.println("Drawn in favour of:"+o);
                            System.out.println("Withdrawal amount:"+a);
                            System.out.println("Balance After withdrawal : "+bal);
                            System.out.println();
                            break;
                        }
                        break;
                        case 3:
                        System.out.println("On whom demand draft to be drawn?");
                        String gk=in.readLine();
                        System.out.println();
                        System.out.println("Which is the place DD is payable at? ");
                        String oc=in.readLine();
                        System.out.println();
                        System.out.println("What is the amount of DD?");
                        double nd=(double)Integer.parseInt(in.readLine());
                        System.out.println();
                        if(bal<nd)
                        System.out.println("Insufficient balance");
                        bal=bal-nd;
                        System.out.println();
                        System.out.println("Demand draft to be drawn to :"+gk);
                        System.out.println("Place DD is payable at :"+oc);
                        System.out.println("Amount of DD : "+nd);
                        System.out.println("Balance :"+bal);
                        System.out.println();
                        break;
                        case 4:
                        System.out.println("Your account balance is: "+bal);
                        System.out.println();
                        break;
                        case 5:
                        System.exit(0);
                        break;
                    }
                }      
                break; 
                case 2: 
                System.out.println("Enter the sum to be deposited every month");
                double P=(double)Integer.parseInt(in.readLine());
                System.out.println();
                System.out.println("Enter the number of months");
                double n=(double)Integer.parseInt(in.readLine());
                System.out.println();
                System.out.println("Enter the rate of interest per anum ");
                double r=(double)Integer.parseInt(in.readLine());
                System.out.println();
                System.out.println();
                double i=P*((n*(n+1)/2))*(r/1200);
                double mv=(P*n)+i;
                System.out.println("Interest="+i);
                System.out.println("Maturity Value="+mv);
                break;
                case 3:
                System.exit(0);
                break;
            }
        }
    }
}