import java.util.Scanner;
public class c1 {
    public static void main(String[]args){
        Scanner teclado= new Scanner (System.in);
        int opcio;
        do {
        System.out.println("Tria a algú d'aquestes persones: ");
        System.out.println("1.Jaume Andres");
        System.out.println("2.Gerardo Morales");
        System.out.println("3.Clara Sauco");
        System.out.println("4.Ruth Moreno");
        System.out.println("5.Anar a dormir");
        opcio=teclado.nextInt();
        switch (opcio){
        case 1: System.out.println("El novio de Ruth Moreno Copoví, també apodada morenita.");break;
        case 2: System.out.println("El novio de Clara sauco, tambçe apodat Nacho Vidal");break;
        case 3: System.out.println("La novia de Jaume andrés. L'unic que vol es un Jan Pujol en la seua vida. Enacara que vist lo vist, s'aconformaria en Enric");break;
        case 4: System.out.println("La novia de Gerardo Morales, no està enamorada de ell, pero quan consumen l'acte sexual la cosaq canviarà. La questió es, li tirarà arrere que aquell la tinga com Nacho vidal?");break; }
        case 5   System.out.println("Nanit Princesa"); break;
       } while (opcio!=5);
    }
}