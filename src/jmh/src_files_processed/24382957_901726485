 * ##### ####### ###########:
 * #### # ####### ## ######### ###
  */
public class TipClculatorApp
{
 public static void main(String[] args)
 {
     Scanner sc = new Scanner(System.in);
     double x; 
     System.out.println("Total price: ");
     x = sc.nextDouble();
     double y;
     System.out.println("What percent tip would you like?");
     y = sc.nextDouble();
     double z;
     z= x*y;
     
     System.out.println("Your tip amount is " + z);
     System.out.println()
     System.out.println("Your orginal amount was: $" + x + "\n" + "Your amount includng tip is $" + getSum());
 }
 /*
  * calculates the total price (price + tip)
  * 
  * x = original price
  * y= percent of tip
  * reutrn the total amount paid
  */
 public static double getSum(double x, double y)
 {
     return Math.round(x+(x*y))
 }
}