import java.util.*;
public class Player
{
    protected String name;
    protected int health;
    protected double defuse;
    private static Scanner input = new Scanner(System.in);
    public static String[][] first;
    public Player(String n, int h, double d)
    {
        name = n;
        health = h;
        defuse = d;
    }
    
    public void MovePlayer(int w2, int l2, int R, int R2)
    {
        int x1, y1;
        int move = 0;
        int move1 = 0;
        int repeat;
        do
        {
        System.out.println("choose which direction to move\n1.) Up\n2.) Right\n3.)Down\n4.)Left");
        int type = input.nextInt();
        if(type == 1)
        {
            if( R == 0 )
            System.out.println("You cannot go that way!");
            move = 0;
            move1 = 0;
            else
            {
            move = -1;
            move1 = 0;
            }
        }
        else if(type == 2)
        {
            move = 0;
            move1 = 1;
        }
        else if(type == 3)
        {
            move = 1;
            move1 = 0;
        }
        else if(type == 4)
        {
            move = 0;
            move1 = -1;    
        }
        else
            System.out.println("Invalid option.");
        
        x1 = (R + move);
        y1 = (R2 + move1);
        int PLocation1 = y1;
        int PLocation2 = x1;
        Player[][] first = new Player[w2][l2];
        Player p = new Player("JOE", 700, .9);
        System.out.println("BOO " + x1 + "   " + y1);
        
        /* if( x1 < 0 || x1 >= first.length || y1 < 0 || y1 >= first[0].length)
        {
            System.out.println("INSIDE "  + x1 + "  " + y1);
            System.out.println("You cannot go that way!");
        }
       
        else
        {*/
            
        for(int x=0; x<first.length; x++)
        {
            for(int y=0; y<first[x].length; y++)
            {  
                if( x == x1 && y == y1)  
             {
                System.out.print("P\t");
                first[x1][y1] = p;
             }
                else
                System.out.print("X\t");
            }
            System.out.println();
        }
        
        R = x1;
        R2 = y1;
        
        
        repeat = 1;        
        }while(repeat == 1);
    }
    
