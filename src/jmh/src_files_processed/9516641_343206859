public class NumberExplorer
{
    private int nNumber;
    
    public NumberExplorer()
    {
        int minNumber = 0; 
        int maxNumber = 100;
        
        this.nNumber = (int) (Math.random() * maxNumber) + minNumber;
    }
    
    public void displayNumber()
    {
        System.out.println("The number is " + this.nNumber);
    }
    
    public void setNumber(int number)
    {
        System.out.println("Setting the number to " + number);
        this.nNumber = number;
    }
    
    
    public boolean isEven()
    {
      if (nNumber % 2 == 0)
        return true;
      else
        return false;
    }
    
    public boolean isOdd()
    {
      if (nNumber % 2 == 1)
        return true;
      else
        return false;
    }
    
    
    public boolean isPalindrome(){
        String number = Integer.toString(nNumber);
        String backwords = "";
        for (int i = number.length() - 1; i > 0; i--){
            backwords += i;
        }
        if (number.equals(backwords)
            return true;
        else
            return false;
    }
    
    public boolean isPrime(){
        for (int i = 2; i < nNumber; i++){
            if (nNumber % i == 0)
                return false;}
        return true;
    }
    
    
    
    
}