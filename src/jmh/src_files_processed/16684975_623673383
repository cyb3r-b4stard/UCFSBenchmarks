import java.util.Scanner;
public class Tester
{
    public static void main(String[] args)
    {
        Board Peg = new Board();
        Print.instructions();
        
        
        while(Rules.checkVictory(Peg) == false)
        {
            if(Rules.checkFailure(Peg) == true)
            {
                System.out.println("\n" + "There are no more moves! Better luck next time!");
                break;
            }
            Print.game(Peg);

            Scanner in = new Scanner(System.in);
            System.out.println("\n" + "What peg would you wish to move?");
            int i = in.nextInt();
            System.out.println("\n" + "Where would you like to move?");
            int j = in.nextInt();

            if(Rules.checkLegality(Peg, i, j) == false)
            {
                System.out.println("\n" + "Oops! Try a different move");
                continue;
            }
            if(Rules.checkVictory(Peg) == true)
            {
                System.out.println("\n" + "You won. Want a cookie?");
            }
            Peg.modifyBoard(i, j);
        }
        while(Rules.checkVictory(Peg) == true)
        {
            System.out.println("Do you want your Cookie?");
            String answer1 = in.nextString();
            if();
        }
    }
}