package Adivina;

import java.util.*;
import java.lang.*;
public class AdivinaloJosek{

    private int numeroMenor;
    private int numeroMayor;
    private static int NUM_MAX_INTENTOS;
    private Date[] intentosHoras;
    private int[] intentosNumeros;

    public static int generarAleatorio(){
        Scanner input = new Scanner(System.in);
        Random adiv = new Random();
        String entrada;
        String[] intervalo;
        int numMayor = 0;
        int numMenor = 0;
        int numRandom = 0;
        int[]arrayEntrada = new int[2]; 
        System.out.println("Introduce el intervalo señor JoseK (2 numeros separados por coma)");
        while(true){

            entrada = input.nextLine();
            intervalo = entrada.split(",");
            if(intervalo.length != 2){
                System.out.print("Numero erroneo de parametros");
                continue;
            }

            try{
                numMayor = Integer.parseInt(intervalo[0]);
                numMenor = Integer.parseInt(intervalo[1]);
                numRandom = adiv.nextInt(numMayor-numMenor+1)+numMenor;
                return numRandom;
            }
            catch(java.lang.NumberFormatException e)
            {
                System.out.println("Parámetros erróneos");
            }
            catch(java.lang.IllegalArgumentException e)
            {
                System.out.println("Primero el numero mayor y luego el menor");
            }
        }

    }

    public static void juego(){
        Scanner input = new Scanner(System.in);
        String[][] tabla = new String[3]
        int intento = 0;
        int nIntento = 0;
        generarAleatorio();
        while(nIntento < NUM_MAX_INTENTOS){

            System.out.println("Juegatela JoseK (FIN para terminar: ");
            intento = input.nextInt();

            tabla[0][nIntento] = intento + "/" + NUM_MAX_INTENTOS;
            tabla[1][nIntento] = 
            tabla[2][nIntento] = intento +"";
            
            nIntento++;
    
        }

    }
}
