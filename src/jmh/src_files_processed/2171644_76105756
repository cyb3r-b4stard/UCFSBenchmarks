import java.*;

/**
 * ##### # ########### ## ##### ####### ####.
 * 
 * @###### (#### ####) 
 * @####### (# ####### ###### ## # ####)
 */
public class Entrada
{
    private String titulo;
    private String cine;
    private int horaSesion;
    private int minSesion;

    
    private static final double PRECIO_BASE = 7.6;
    private static final int EDAD = 65;
    private static final double DESCUENTO_MAYORES = 0.7 ;
    private static final double DESCUENTO_DIA_ESPECTADOR = 0.2 ;
    private static final double DOMINGOS_Y_FESTIVOS = 0.2 ;
    private static final double SABADOS_Y_VISPERAS = 0.1 ;
    private static final double TARGETA_CLIENTE_MENORES_65 = 0.2 ;
    private static final double TARGETA_CLIENTE_MENORES_65_DIA_ESPECTADOR = 0 ;
    
    public Entrada (String titulo, String cine, int horaSesion, int minSesion) {
        this.titulo = titulo;
        this.cine = cine;
        this.horaSesion = horaSesion;
        this.minSesion = minSesion;
        
        public Entrada (){this("Lord of the Rings - 3D","Babel",2230)};
}   
    public String getTitulo() {return titulo;};
    public String getCine() {return cine;};
    public int getHoraSesion() {return horaSesion;};
    public int getMinSesion() {return minSesion;};    
    public void setTitulo(String nuevoTitulo){titulo = nuevoTitulo;};
    public void setCine(String nuevoCine){cine=nuevoCine;};
    public void setHoraSesion(int nuevoHoraSesion){horaSesion=nuevoHoraSesion;};
    public void setMinSesion(int nuevoMinSesion){minSesion=nuevoMinSesion;};
    
    public String toString (){
        return  this.titulo + ", proyectada en Cines " + this.cine + ", a las " + this.horaSesion + 
        " Precio base: " + PRECIO_BASE + " euros";
    
    }
    
    public boolean equals(Object o){
        return o instanceof Entrada &&
            this.titulo.equals( ((Entrada)o).titulo) &&
            this.titulo.equals( ((Entrada)o).titulo) &&
            this.titulo.equals( ((Entrada)o).titulo) &&
            this.titulo.equals( ((Entrada)o).titulo) ;
            
    }

}
