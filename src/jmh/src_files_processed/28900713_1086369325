import java.util.ArrayList;
import java.util.Iterator;

public class Library
{
    private ArrayList<Book> books;

    public Library()
    {
        books = new ArrayList<Book>(); 
    }

    public void addBook(Book book)
    {
        books.add(book);
    }

    public int numberBooks()
    {
        return books.size();
    }

    public String loanStatus(Book book)
    {  
        return book.loanStatus();   
    }

    public boolean  hasBook(Book book)
    {
         if(books.contains(book)==false)
         System.out.print((book.getTitle()) "The book has been removed");
         
        
         else
         System.out.print(book.getTitle()+"The book is in stock");
         return true;
         return true;
          
    }

    public boolean  removeBook(Book book)
    {
            books.remove(book);
        return true;
    }

    public void removeAllBooks()
    {
        books.clear();
    }

    public void printDetails()
    {
        for(Book books : books) {
            books.printDetails();
        }

    }
}