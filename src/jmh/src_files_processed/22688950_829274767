import sum.kern.*;

public class Freihand
{
    Bildschirm derBildschirm;
    Tastatur dieTastatur;
    Maus dieMaus;
    Buntstift meinStift;

    public Freihand()
    {
        derBildschirm = new Bildschirm();
        dieTastatur = new Tastatur();
        dieMaus = new Maus();
        meinStift = new Buntstift();
        this.fuehreAus();
    }

    public void fuehreAus()
    {   
        while (!dieMaus.doppelKlick())
        {
            if (dieMaus.istGedrueckt())
            {
                meinStift.bewegeBis(dieMaus.hPosition(),dieMaus.vPosition());
                meinStift.runter();
            }
            else
            { 
                meinStift.hoch();
            }
            if(dieTastatur.wurdeGedrueckt())
            {
                if (dieTastatur.zeichen())
                {  switch{
                    case 'r':meinStift.setzeFarbe(Farbe.ROT);meinStift.normal();
                    break;
                    case 'b':meinStift.setzeFarbe(Farbe.BLAU);meinStift.normal();
                    break;
                    case 'p':meinStift.setzeFarbe(Farbe.PINK);meinStift.normal();
                    break;
                    case 'c':mein
                }
                else
                {

                    if (dieTastatur.zeichen() =='b')
                    {
                        meinStift.setzeFarbe(Farbe.BLAU);
                        meinStift.normal();
                    }
                    else
                    {
                        if (dieTastatur.zeichen() =='p')
                        {
                            meinStift.setzeFarbe(Farbe.PINK);
                            meinStift.normal();
                        }
                        else
                        if (dieTastatur.zeichen() =='l')
                        {
                            meinStift.setzeLinienbreite(30);
                            meinStift.radiere();
                        }

                        else
                        {
                            meinStift.setzeFarbe(Farbe.SCHWARZ);
                            meinStift.normal();
                        }
                    }
                }
                dieTastatur.weiter();
            }
        }
    }
}