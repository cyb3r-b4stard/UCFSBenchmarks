public class Vollkreis
{
    /** Attribute */
    private int radius;
    private String fuellfarbe;
    private int mitteX,mitteY;
    

    /** Referenzattribute */

    /** Konstruktor fuer Objekte der Klasse Vollkreis */
    public Vollkreis(int r, int x, int y)
    {
        radius = r ;
        mitteX = x ;
        mitteY = y ;
        fuellfarbe = "gelb" ;
        zeichne();
        
    }

    /** Methoden */
    public void zeichne() 
{
        Zeichenfenster.gibFenster().fuelleKreis(mitteX, mitteY, radius, fuellfarbe);

    }
    
   public void setzeFuellfarbe (String neueFarbe)
      
    { fuellfarbe = neueFarbe ; 
        zeichne () ;
    
    }
  public void uebermale ()
 { Zeichenfenster.gibFenster().fuelleKreis(mitteX, mitteY, radius, fuellfarbe);

}
   