public class tableaux {

    public static void statistiques (int [] tableau) {
        if (tableau==null || tableau.length == 0) {
            System.out.println("Aucune statistique");
        } else {
            int min=0;
            int max=0;
            int somme=0;
            double moyenne;
            for (int i= 0 ; i< tableau.length ; i++) {
                if (i== 0) {
                    min = tableau[0];
                    max = tableau[0];
                    somme = somme + tableau[0];
                } else {
                    min = Math.min(tableau[i], min);
                    max = Math.max(tableau[i], max);
                    somme = somme + tableau[i];
                    
                }
                
            }
            moyenne = somme / tableau.length;
            System.out.println("MIN : " + min);
            System.out.println("MAX : " + max);
            System.out.println("MOY : " + moyenne);
        }
    }
    
    public static void main (String[] params) {
        int tableau1 [] = {1, 2, 3, 4, 5);
        statistiques(tableau1);
    } 
    
} 
