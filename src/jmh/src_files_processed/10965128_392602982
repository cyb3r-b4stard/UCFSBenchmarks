    public void sendToTwitter(String message)
    {
       System.out.println("Die Nachricht lautet: " + message);
       System.out.println("Connecting to twitter...");
       ConfigurationBuilder cb = new ConfigurationBuilder();
       cb.setDebugEnabled(true);
       cb.setDebugEnabled(true)
        .setOAuthConsumerKey("qn4KTmv8uKq3c4Nsw80VAg")
        .setOAuthConsumerSecret("IN4JElV093cZb3hvYU2sMOWUYirek5pXWVqKETmVExw")
        .setOAuthAccessToken("1690557271-wC3ZHeR1r8sgpplgxetILQHK9PktCukwz7QnVS8")
        .setOAuthAccessTokenSecret("QZxUdSFfVubRoI1rIOhMu5Ynr1xlXaRqvmWHdxRZE");
        System.out.println("Sending message: " + message + "...");
        try {
            TwitterFactory tf = new TwitterFactory(cb.build());
            Twitter twitter = tf.getInstance();
            Status status = twitter.updateStatus(message);
            System.out.println("Message sent.");
        } catch (Exception e) {
            System.out.println("Connection error");
        }

