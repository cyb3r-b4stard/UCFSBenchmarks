public class Mypicture
{
    public static void main(String[] args)
   {
       Circle circle=new Circle();
       circle.makeVisible();
       circle.changeSize(60);
       circle.slowMoveVertical(300)
       circle.slowMoveHorizontal(300)
       Square square=new Square();
       square.makeVisible();
       square.moveRight();
       for(int i=1;i<7;i++){
        square.moveDown();
       }
       square.changeSize(100);
       Triangle triangle = new Triangle();
       triangle.makeVisible();
       triangle.changeSize(50,130);
       triangle.moveVertical(105);
       triangle.moveHorizontal(80);
       Square square2 = new Square();
       square2.makeVisible();
       square2.changeSize(30);
       square2.moveVertical(130);
       square2.moveHorizontal(40);
       square2.changeColor("black");
}
}