import java.util.*;
import java.io.*;
/**
 * ##### # ########### ## ##### ############## ####.
 * 
 * @###### (##### ####) 
 * @####### (######## #)
 */
public class MarksProcessor
{
    
    private String nameOfCohort;
    
    private ArrayList<StudentRecord> marksListCollection;
    
    private int nameCount;
    
    private int marksCount;
    
    
    
    
    public MarksProcessor()
    {
        nameOfCohort = null;
        marksListCollection = new ArrayList<StudentRecord>();
        nameCount = 0;
        marksCount = 0;
        
    }

    public String getNameOfCohort()
    {
        return nameOfCohort;
    }
    
    private void storeData(StudentRecord studentrecord)
    {
      marksListCollection.add(studentrecord);
    }
    
    public void showStudent(int listPosition)
   {
      StudentRecord studentRecord;
      if( listPosition < marksListCollection.size() )
      {
         studentRecord = marksListCollection.get(listPosition);
         System.out.println("Position " + listPosition  + ": " + toString());
      }
   }
    
   public void showAllStudents()
   {
      System.out.println("Name");
      System.out.println("===");

      int listPosition = 0;
      while( listPosition<marksListCollection.size() )
      {
         showStudent(listPosition);
         listPosition++;
      }
      System.out.println(listPosition + " student shown" );    
   }
    
   public int numberOfmarks()
   {
      return marksListCollection.size();
   }
   
   public void writeStudentData(String fileName) throws FileNotFoundException
   {
      PrintWriter pWriter = new PrintWriter(fileName);
      
      for(StudentRecord a: marksListCollection)
      {
         String lineOfOutput = a.getStudentName() + " " + a.getNoOfMarks();
         pWriter.println(lineOfOutput);
      }
      pWriter.close();
   }
   
    public void readMarksData(String fileName) throws FileNotFoundException
    {
       
      
       
       
       
       File dataFile = new File(fileName);
      Scanner scanner = new Scanner(dataFile);
      
      int lineNumber = 0;
        while(scanner.hasNextLine()){
            String line = scanner.nextLine();
            System.out.println(toString();+ " :" + line));
            
        }


      
      scanner.close();
       
        
           
           
            
          
         
           
       }
       
    }
    
    
    
